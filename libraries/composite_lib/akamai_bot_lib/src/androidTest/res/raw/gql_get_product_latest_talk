query getProductLatestTalk($productID: Int!){
    talkProductList(page: 1, per_page: 1, with_comment: 1, pageId: 0, product_id: $productID){
        data{
            list{
                id
                commentList{
                    id
                    createTime
                    createTimeFmt
                    isModerator
                    isOwner
                    isSeller
                    message
                    rawMessage
                    shopId
                    shopImage
                    shopName
                    userId
                    userImage
                    userName
                }
                createTime
                createTimeFmt
                message
                rawMessage
                shopId
                totalComment
                userId
                userImage
                userName
                userUrl
            }
        }
    }
}