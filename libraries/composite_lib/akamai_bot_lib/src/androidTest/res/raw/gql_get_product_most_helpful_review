query getProductMostHelpfulReview($productID: Int!, $userID: Int){
    ProductMostHelpfulReviewQuery(productId: $productID, userId: $userID){
        list{
            reviewId
            reputationId
            title
            message
            productRating
            productRatingDescription
            reviewCreateTime
            reviewCreateTimestamp
            reviewUpdateTime
            reviewUpdateTimestamp
            imageAttachments{
                attachmentId
                description
                imageThumbnailUrl
                imageUrl
            }
            isAnonymous
            reviewResponse{
                message
                createTime
                createTimestamp
                by
            }
            user {
                userId
                fullName
                image
                label
                url
            }
            isReportable
            isUpdated
            likeDislike{
                totalLike
                totalDislike
                likeStatus
                isShowable
            }
            productVariant{
                name
            }
        }
    }
}