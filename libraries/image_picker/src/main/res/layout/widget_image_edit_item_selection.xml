<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lst_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:itemCount="3"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/view_edit_item_selection"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_title_item"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_4"
        android:gravity="center_horizontal"
        android:textColor="@color/Unify_N700"
        app:layout_constraintBottom_toTopOf="@id/et_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lst_item"
        app:typographyType="body_3"
        tools:text="Nama Menu Item" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/et_color"
        app:layout_constraintTop_toBottomOf="@id/txt_title_item"
        app:layout_constraintBottom_toTopOf="@id/btn_color"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/unify_space_8"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        app:text_field_label="Hex Color"
        app:text_field_placeholder="Hex Color"
        app:text_field_input_type="text"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_color"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:text="Save"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>