<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/Unify_N0"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/ic_ig_not_login"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        android:id="@+id/message_retry"
        style="@style/TextView.Title.BlackSecondary"
        android:gravity="center"
        android:text="@string/instagram_label_not_logged_in"
        android:textColor="@color/font_black_primary_70" />

    <Button
        android:id="@+id/button_retry"
        style="@style/Button.Submit.Green"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:text="@string/instagram_label_login_ig" />

</LinearLayout>
