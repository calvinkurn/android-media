<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?toolbarTheme"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:subtitleTextAppearance="?subtitleTextAppearance"
            app:titleTextAppearance="?titleTextAppearance">

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                style="@style/TextView.Title.Green"
                android:text="@string/label_done"
                android:padding="@dimen/dp_8"
                android:background="?attr/selectableItemBackground"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/vg_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.tokopedia.imagepicker.common.widget.NonSwipeableViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/vg_footer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editor_footer_height">

                <LinearLayout
                    android:id="@+id/vg_editor_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <com.tokopedia.imagepicker.editor.widget.ImageEditActionMainWidget
                        android:id="@+id/image_edit_action_main_widget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:id="@+id/vg_editor_preview_content"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <!-- layout in programmatically -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginRight="@dimen/dp_12"
                                android:text="Preview Test" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginRight="@dimen/dp_12"
                                android:text="Preview Test" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginRight="@dimen/dp_12"
                                android:text="Preview Test" />

                            <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="budi fewge  fe few few     "/>-->
                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>
            </FrameLayout>

            <!--<FrameLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_72">-->

            <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/tab_layout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:clipChildren="false"-->
            <!--android:clipToPadding="false"-->
            <!--app:tabGravity="fill"-->
            <!--app:tabIndicatorColor="@null"-->
            <!--app:tabMinWidth="@dimen/tab_min_width"-->
            <!--app:tabMode="fixed"-->
            <!--app:tabSelectedTextColor="@color/font_black_primary_70"-->
            <!--app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"-->
            <!--app:tabTextColor="@color/font_black_primary_70">-->
            <!--&lt;!&ndash;will be added programmatically at ImageEditorActivity&ndash;&gt;-->

            <!--</android.support.design.widget.TabLayout>-->

            <!--</FrameLayout>-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vg_download_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/indeterminate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/downloading_images" />
        </LinearLayout>

        <View
            android:id="@+id/blocking_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="gone"
            android:clickable="true"
            android:focusable="true" />

    </FrameLayout>

</LinearLayout>