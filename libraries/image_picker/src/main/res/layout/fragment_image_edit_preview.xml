<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:showDividers="beginning|end"
        android:divider="@drawable/bg_line_separator">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.tokopedia.imagepicker.editor.widget.CropperView
                android:id="@+id/cropper_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:nocropper__fit_to_center="true"
                app:nocropper__grid_color="@color/white_65"
                app:nocropper__grid_opacity="0.8"
                app:nocropper__grid_thickness="0.8dp"
                app:nocropper__padding_color="@android:color/transparent" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/snap_button"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="start|bottom"
                android:layout_margin="@dimen/dp_16"
                android:background="@drawable/circle_trans_white"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_snap"
                android:visibility="gone"
                tools:visibility="visible"/>

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/indeterminate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_gravity="center"
                android:visibility="gone"
                tools:visibility="visible"/>

        </FrameLayout>
    </LinearLayout>

</FrameLayout>

