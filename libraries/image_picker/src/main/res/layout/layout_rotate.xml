<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/control_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_reset"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:text="@string/reset"
        style="@style/TextView.Title"
        android:layout_gravity="center_horizontal"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/dp_4">
        <com.tokopedia.imagepicker.editor.widget.TwoLineSeekBar
            android:id="@+id/seekBar_rotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:high_color="@color/tkpd_main_green"
            app:line_color="@color/grey_700"
            app:line_width="@dimen/dp_2"
            app:nail_color="@color/tkpd_main_green"
            app:nail_radius="@dimen/dp_4"
            app:nail_stroke_width="@dimen/dp_3"
            app:thumb_color="@color/white"
            app:thumb_radius="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:clipChildren="false"
            android:clipToPadding="false"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_rotate_90"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            app:srcCompat="@drawable/ic_rotate"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>
    </FrameLayout>

</LinearLayout>