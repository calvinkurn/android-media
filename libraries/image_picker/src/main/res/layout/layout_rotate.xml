<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_editor_control_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_reset"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:text="@string/reset"
        style="@style/TextView.Title"
        android:textColor="@color/Unify_N700"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <com.tokopedia.imagepicker.editor.widget.TwoLineSeekBar
            android:id="@+id/seekBar_rotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_48"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            app:high_color="@color/Unify_G400"
            app:high_stroke_width="@dimen/dp_2"
            app:line_color="@color/Unify_N500"
            app:line_width="@dimen/dp_1"
            app:nail_color="@color/Unify_N500"
            app:nail_radius="@dimen/dp_0"
            app:nail_stroke_width="@dimen/dp_0"
            app:thumb_color="@color/Unify_N0"
            app:thumb_radius="@dimen/dp_12" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/min_value_rotate"
            android:textColor="@color/Unify_N400"
            android:layout_alignParentBottom="true"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/max_value_rotate"
            android:textColor="@color/Unify_N400"
            android:layout_alignParentBottom="true"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:textColor="@color/Unify_N400"
            android:text="@string/default_rotate_value" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_rotate_90"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_rotate_90" />
    </RelativeLayout>

</LinearLayout>