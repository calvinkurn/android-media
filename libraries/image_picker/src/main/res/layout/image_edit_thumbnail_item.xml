<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/image_editor_thumbnail_width"
    android:layout_height="@dimen/image_editor_thumbnail_width"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp">
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/thumbnail_image_editor_item"
        android:layout_margin="1dp"/>

    <View
        android:id="@+id/rect_green_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_picker_rect_stroke_green" />
</FrameLayout>
