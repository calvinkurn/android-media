<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_editor_control_height"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_brightness"
        style="@style/TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/Unify_N700"
        android:text="@string/default_brightness_value" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <com.tokopedia.imagepicker.editor.widget.TwoLineSeekBar
            android:id="@+id/seekBar_brightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:high_color="@color/Unify_G400"
            app:high_stroke_width="2dp"
            app:line_color="@color/Unify_N500"
            app:line_width="1dp"
            app:nail_color="@color/Unify_N500"
            app:nail_radius="0dp"
            app:nail_stroke_width="0dp"
            app:thumb_color="@color/Unify_N0"
            app:thumb_radius="12dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>
    </RelativeLayout>

</LinearLayout>