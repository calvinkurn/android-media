<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_picker_thumbnail_outer_width"
    android:layout_height="@dimen/image_picker_thumbnail_outer_width"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_4"
    android:layout_marginRight="@dimen/dp_4">

    <FrameLayout
        android:layout_width="@dimen/image_picker_thumbnail_inner_width"
        android:layout_height="@dimen/image_picker_thumbnail_inner_width"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_coupon_image" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rect_stroke_light_grey" />

        <TextView
            android:id="@+id/tv_counter"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@drawable/rect_round_green_stroke_white"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_4"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_10"
            tools:text="1" />

    </FrameLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="top|end"
        android:background="@drawable/circle_light_grey"
        app:srcCompat="@drawable/ic_close_white"
        android:padding="@dimen/dp_2"/>
</FrameLayout>

