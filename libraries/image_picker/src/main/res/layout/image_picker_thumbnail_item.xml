<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_picker_thumbnail_outer_width"
    android:layout_height="@dimen/image_picker_thumbnail_outer_width"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <FrameLayout
        android:layout_width="@dimen/image_picker_thumbnail_inner_width"
        android:layout_height="@dimen/image_picker_thumbnail_inner_width"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_crop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rect_stroke_light_grey" />

        <TextView
            android:id="@+id/tv_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_round_green_stroke_white"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textColor="@color/Unify_N0"
            android:textSize="@dimen/sp_13"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            tools:text="100" />

        <TextView
            android:id="@+id/tv_counter_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_round_green_stroke_white"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textColor="@color/Unify_N0"
            android:textSize="@dimen/sp_13"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            tools:text="Utama"
            tools:visibility="gone"
            android:visibility="gone" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:background="@drawable/circle_light_grey"
        app:srcCompat="@drawable/ic_close_white"
        android:padding="2dp"/>
</FrameLayout>

