<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/image_editor_widget_item_width"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="48dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_crop_rotate" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_edit"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_4"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selection_container"
        app:typographyType="body_3"
        tools:text="Nama Menu Item" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/txt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:labelType="general_dark_red"
        android:layout_gravity="center"
        app:labelTitle="@string/editor_common_new_feature_watermark"
        android:visibility="invisible"
        tools:visibility="visible"/>

</LinearLayout>