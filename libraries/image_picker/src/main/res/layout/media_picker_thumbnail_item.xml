<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_picker_thumbnail_outer_width"
    android:layout_height="@dimen/image_picker_thumbnail_outer_width"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <FrameLayout
        android:layout_width="@dimen/image_picker_thumbnail_inner_width"
        android:layout_height="@dimen/image_picker_thumbnail_inner_width"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_crop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rect_stroke_light_grey" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/unify_space_4"
            android:layout_marginStart="5dp"
            android:gravity="center"
            app:typographyType="small"
            android:textColor="@color/Unify_NN1000"
            android:textSize="@dimen/sp_13"
            android:layout_marginEnd="@dimen/unify_space_4"
            android:text="00:12" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/unify_space_16"
            android:layout_height="@dimen/unify_space_16"
            android:layout_gravity="bottom|start"
            android:alpha="0.8"
            android:layout_marginStart="@dimen/unify_space_4"
            android:layout_marginBottom="@dimen/unify_space_4"
            app:srcCompat="@drawable/ic_baseline_more_vert_24"
            android:background="@drawable/circle_trans_white" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:background="@drawable/circle_light_grey"
        app:srcCompat="@drawable/ic_close_white"
        android:padding="2dp"/>
</FrameLayout>

