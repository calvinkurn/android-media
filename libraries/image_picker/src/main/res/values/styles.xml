<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TwoLineSeekBar">
        <attr name="nail_color" format="color" />
        <attr name="thumb_color" format="color" />
        <attr name="line_color" format="color" />
        <attr name="high_color" format="color" />
        <attr name="thumb_radius" format="dimension" />
        <attr name="nail_radius" format="dimension" />
        <attr name="nail_stroke_width" format="dimension" />
        <attr name="high_stroke_width" format="dimension" />
        <attr name="line_width" format="dimension" />
    </declare-styleable>

    <style name="ImagePickerTab" parent="TextAppearance.Design.Tab">
        <item name="android:background">@color/Unify_N0</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="tabTextColor">@color/Unify_N300</item>
        <item name="tabTextAppearance">@style/TitlePagePickerIndicator</item>
        <item name="tabSelectedTextColor">@color/Unify_N700</item>
    </style>

    <style name="TitlePagePickerIndicator">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="VideoPickerTab" parent="TextAppearance.Design.Tab">
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="tabTextColor">@color/grey_500</item>
        <item name="tabTextAppearance">@style/TitlePagePickerIndicator</item>
        <item name="tabSelectedTextColor">@color/font_black_primary_70</item>
    </style>

    <style name="ProgressBar.Tokopedia" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_tokopedia</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/Green_G600</item>
        <item name="android:textColorPrimary">@color/Unify_N600</item>
        <item name="android:background">@color/Unify_N0</item>
    </style>

</resources>