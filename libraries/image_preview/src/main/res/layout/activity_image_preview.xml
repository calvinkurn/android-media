<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N700">

    <com.tokopedia.design.component.ticker.TouchViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:default_measure="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:background="@color/Unify_N700_44">
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close_white"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/ivDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/close_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_download"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N0"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivClose"
            android:layout_toEndOf="@+id/ivClose"
            android:layout_toLeftOf="@+id/ivDownload"
            android:layout_toStartOf="@+id/ivDownload"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            tools:text="Store"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N0"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/tvTitle"
            android:layout_toRightOf="@+id/ivClose"
            android:layout_toEndOf="@+id/ivClose"
            android:layout_toLeftOf="@+id/ivDownload"
            android:layout_toStartOf="@+id/ivDownload"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            tools:text="12:20"/>
    </RelativeLayout>

</RelativeLayout>