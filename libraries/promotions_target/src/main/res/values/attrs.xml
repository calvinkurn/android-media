<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CardConstraintLayout">
        <attr name="shadowHeight" format="dimension"/>
        <attr name="shadowDx" format="dimension"/>
        <attr name="shadowDy" format="dimension"/>
        <attr name="shadowStartY" format="dimension"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowStrokeWidth" format="dimension"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="blurRadius" format="dimension"/>
        <attr name="enableShadow" format="boolean"/>
        <attr name="enableBorder" format="boolean"/>
        <attr name="borderHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RoundButton">
        <attr name="rb_cornerRadius" format="dimension" />
        <attr name="rb_buttonColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="RoundTextView">
        <attr name="rtv_cornerRadius" format="dimension" />
        <attr name="rtv_buttonColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="CouponView">
        <attr name="cvCircleColor" format="color" />
        <attr name="cvCircleRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TargetPromoProgressBar">
        <attr name="tpromo_progress" format="integer" />
        <attr name="tpromo_progress_max" format="integer" />
        <attr name="tpromo_indeterminate_mode" format="boolean" />
        <attr name="tpromo_progressbar_color" format="color" />
        <attr name="tpromo_progressbar_color_start" format="color" />
        <attr name="tpromo_progressbar_color_end" format="color" />
        <attr name="tpromo_progressbar_color_direction">
            <flag name="left_to_right" value="1" />
            <flag name="right_to_left" value="2" />
            <flag name="top_to_bottom" value="3" />
            <flag name="bottom_to_top" value="4" />
        </attr>
        <attr name="tpromo_background_progressbar_color" format="color" />
        <attr name="tpromo_background_progressbar_color_start" format="color" />
        <attr name="tpromo_background_progressbar_color_end" format="color" />
        <attr name="tpromo_background_progressbar_color_direction">
            <flag name="left_to_right" value="1" />
            <flag name="right_to_left" value="2" />
            <flag name="top_to_bottom" value="3" />
            <flag name="bottom_to_top" value="4" />
        </attr>
        <attr name="tpromo_progressbar_width" format="dimension" />
        <attr name="tpromo_background_progressbar_width" format="dimension" />
        <attr name="tpromo_round_border" format="boolean" />
        <attr name="tpromo_start_angle" format="float" />
        <attr name="tpromo_progress_direction">
            <flag name="to_right" value="1" />
            <flag name="to_left" value="2" />
        </attr>
    </declare-styleable>
</resources>