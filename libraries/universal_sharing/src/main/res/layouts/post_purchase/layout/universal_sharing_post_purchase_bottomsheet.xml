<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.universal_sharing.view.customview.UniversalSharingPostPurchaseRecyclerView
        android:id="@+id/universal_sharing_post_purchase_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/universal_sharing_layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_NN900_32"
        android:visibility="gone"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>