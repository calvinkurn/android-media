<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/universal_sharing_icon_shop"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:unify_image_type="rect"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/universal_sharing_tv_shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/universal_sharing_icon_shop"
        app:layout_constraintLeft_toRightOf="@id/universal_sharing_icon_shop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/universal_sharing_icon_shop"
        android:layout_marginStart="4dp"
        app:typographyType="paragraph_3"
        app:typographyWeight="bold"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Xiaomi Official Store"/>

</androidx.constraintlayout.widget.ConstraintLayout>