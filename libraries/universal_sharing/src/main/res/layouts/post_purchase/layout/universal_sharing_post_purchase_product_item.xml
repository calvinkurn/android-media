<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/universal_sharing_iv_product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/universal_sharing_tv_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/universal_sharing_iv_product"
            app:layout_constraintLeft_toRightOf="@id/universal_sharing_iv_product"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyType="paragraph_3"
            tools:text="Xiaomi 12 Pro 256 GB - Pink" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/universal_sharing_tv_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/universal_sharing_tv_product_name"
            app:layout_constraintLeft_toLeftOf="@id/universal_sharing_tv_product_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/universal_sharing_layout_btn_share"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyType="paragraph_2"
            app:typographyWeight="bold"
            tools:text="Rp300.000"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/universal_sharing_layout_btn_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/universal_sharing_tv_product_price"
            app:layout_constraintLeft_toLeftOf="@id/universal_sharing_tv_product_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1"
            android:padding="4dp"
            android:background="@drawable/universal_sharing_button_background">

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/universal_sharing_icon_btn_share"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/universal_sharing_tv_btn_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:icon_color_light_enable="@color/Unify_GN500"
                app:icon_color_night_enable="@color/Unify_GN500"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:icon_name="SOCIAL_SHARE"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/universal_sharing_tv_btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/universal_sharing_icon_btn_share"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constrainedWidth="true"
                android:layout_marginStart="8dp"
                android:gravity="center"
                app:typographyType="display_3"
                app:typographyWeight="bold"
                android:textColor="@color/Unify_GN500"
                android:text="@string/universal_sharing_post_purchase_button_text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>