<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader"
        android:layout_width="@dimen/spacing_lvl8"
        android:layout_height="@dimen/spacing_lvl8"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/img_options_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:layout_marginStart="16dp"
        android:text="@string/img_options_heading"
        android:textColor="@color/Unify_N700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_list_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:paddingEnd="10dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/img_options_heading"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/preview_image"
        app:layout_constraintTop_toBottomOf="@+id/image_list_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:contentDescription="@string/desc_img_preview"
        android:layout_height="@dimen/dp_300"/>
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/thumb_nail_image"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintCircleRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/preview_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/desc_img_thumbnail"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"/>
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/thumb_nail_title"
        android:layout_marginStart="16dp"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_19"
        android:text="@string/tn_title"
        android:textColor="@color/Unify_N700"
        android:textSize="14sp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        app:layout_constraintTop_toTopOf="@id/thumb_nail_image"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/affilate_commision"
        app:layout_constraintLeft_toRightOf="@id/thumb_nail_image"/>
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/affilate_commision"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_19"
        android:textColor="@color/Unify_N700"
        android:textSize="14sp"
        app:typographyType="body_3"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/thumb_nail_title"
        app:layout_constraintBottom_toTopOf="@id/tokopedia_link"
        app:layout_constraintLeft_toRightOf="@id/thumb_nail_image"/>
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokopedia_link"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_19"
        android:text="@string/tokopedia_link"
        android:textColor="@color/Unify_N700"
        android:textSize="14sp"
        app:typographyType="body_3"
        android:layout_marginStart="16dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/affilate_commision"
        app:layout_constraintBottom_toBottomOf="@id/thumb_nail_image"
        app:layout_constraintLeft_toRightOf="@id/thumb_nail_image"/>
    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thumb_nail_image"
        android:background="@color/Unify_N75"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:elevation="@dimen/dp_1"
        android:id="@+id/rv_social_media_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator" />

    <ImageView
        android:id="@+id/copy_link_img"
        android:scaleType="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="@dimen/dp_1"
        android:src="@drawable/universal_sharing_ic_link"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/rv_social_media_list"
        android:contentDescription="@string/desc_img_copy_link"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sms_img"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/copy_link_txtv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/sp_12"
        app:typographyType="body_3"
        android:elevation="@dimen/dp_1"
        android:text="@string/label_bhasha_copy_link"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/copy_link_img"
        app:layout_constraintLeft_toLeftOf="@+id/copy_link_img"
        app:layout_constraintRight_toRightOf="@+id/copy_link_img" />

    <ImageView
        android:id="@+id/sms_img"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@drawable/universal_sharing_ic_chat"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="@dimen/dp_1"
        android:contentDescription="@string/desc_img_sms"
        app:layout_constraintTop_toBottomOf="@+id/rv_social_media_list"
        app:layout_constraintLeft_toRightOf="@+id/copy_link_img"
        app:layout_constraintRight_toLeftOf="@id/email_img"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/sms_link_txtv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:visibility="gone"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/sp_12"
        app:typographyType="body_3"
        android:elevation="@dimen/dp_1"
        android:text="@string/share_sms"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/sms_img"
        app:layout_constraintLeft_toLeftOf="@+id/sms_img"
        app:layout_constraintRight_toRightOf="@+id/sms_img" />

    <ImageView
        android:id="@+id/email_img"
        android:layout_marginTop="16dp"
        android:scaleType="center"
        android:src="@drawable/universal_sharing_ic_message"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="@dimen/dp_1"
        android:contentDescription="@string/desc_img_email"
        app:layout_constraintTop_toBottomOf="@+id/rv_social_media_list"
        app:layout_constraintLeft_toRightOf="@+id/sms_img"
        app:layout_constraintRight_toLeftOf="@+id/others_img"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/email_link_txtv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/sp_12"
        app:typographyType="body_3"
        android:elevation="@dimen/dp_1"
        android:text="@string/share_email"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/email_img"
        app:layout_constraintLeft_toLeftOf="@+id/email_img"
        app:layout_constraintRight_toRightOf="@+id/email_img" />

    <ImageView
        android:id="@+id/others_img"
        android:scaleType="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/universal_sharing_ic_menu_kebab_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="@dimen/dp_1"
        android:contentDescription="@string/desc_img_others"
        app:layout_constraintTop_toBottomOf="@+id/rv_social_media_list"
        app:layout_constraintLeft_toRightOf="@+id/email_img"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/others_link_txtv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/sp_12"
        app:typographyType="body_3"
        android:elevation="@dimen/dp_1"
        android:text="@string/label_action_more"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/others_img"
        app:layout_constraintLeft_toLeftOf="@+id/others_img"
        app:layout_constraintRight_toRightOf="@+id/others_img" />

    <View
        android:id="@+id/extra_padding"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/copy_link_txtv"
        android:background="@color/transparent"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/universal_share_bottomsheet_image_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="image_list_container, img_options_heading"
        android:id="@+id/image_selection_view_group"/>
</androidx.constraintlayout.widget.ConstraintLayout>