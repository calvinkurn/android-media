<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_item_universal_sharing_bottomsheet"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_social_media_logo"
        android:layout_width="@dimen/dp_48"
        android:scaleType="center"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:contentDescription="@string/desc_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_social_media_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_18"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/sp_12"
        app:typographyType="body_3"
        android:text="@string/label_facebook_story"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_social_media_logo"
        />

    <View
        android:id="@+id/item_separator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="@dimen/dp_22"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_social_media_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_social_media_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/Unify_N50"
        />

</androidx.constraintlayout.widget.ConstraintLayout>