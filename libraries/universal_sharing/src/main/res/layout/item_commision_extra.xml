<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_commision_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_GN500"
        android:layout_marginEnd="@dimen/unify_space_12"
        tools:text="Komisi Ekstra"
        app:typographyWeight="bold"
        android:background="@drawable/background_ticker_free"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_expired_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="display_3"
        android:textColor="@color/Unify_NN950"
        tools:text="Hingga 31 Des 2022"/>
</LinearLayout>