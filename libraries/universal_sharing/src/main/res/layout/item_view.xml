<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:layout_height="wrap_content">
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/desc_img_option"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/border_view"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:src="@drawable/universal_share_border"
        android:contentDescription="@string/desc_img_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/checked_circle"
        android:layout_width="@dimen/dp_19"
        android:layout_height="@dimen/dp_19"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/universal_share_ic_check_circle"
        android:background="@drawable/universal_sharing_circle_white"
        android:scaleType="center"
        android:contentDescription="@string/desc_img_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/image"/>
    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="border_view,checked_circle"
        android:id="@+id/selected_view_group"/>
</androidx.constraintlayout.widget.ConstraintLayout>