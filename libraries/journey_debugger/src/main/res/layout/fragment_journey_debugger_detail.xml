<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/journey_text_timestamp"
            app:typographyType="body_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2017-01-01 01:01:01.111" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/journey_text_name"
                app:typographyType="heading_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                tools:text="com.tokopedia.journeydebugger.ui.activity.JourneyDebuggerActivity" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/icon_copy_journey"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:icon_enable_state="true"
                app:icon_name="COPY" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>