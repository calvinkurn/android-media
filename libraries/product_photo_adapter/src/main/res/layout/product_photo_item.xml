<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_61"
    android:layout_height="@dimen/dp_62"
    android:layout_marginEnd="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5">

    <View
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/spacing_lvl2"
        android:alpha="0.12"
        android:background="@drawable/rect_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        app:cardCornerRadius="@dimen/spacing_lvl2"
        app:cardElevation="@dimen/dp_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_photo_layout"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_product_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/primary_badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:layout_marginRight="@dimen/spacing_lvl2"
                android:layout_marginBottom="@dimen/spacing_lvl2"
                android:background="@drawable/rect_green_solid"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lvl1"
                    android:layout_marginBottom="@dimen/spacing_lvl1"
                    android:text="@string/label_primary"
                    android:textColor="@color/Unify_N0"
                    android:textSize="@dimen/fontSize_lvl1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_drag_handle"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:layout_marginBottom="@dimen/spacing_lvl2"
                android:background="@drawable/oval_transparent_grey"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:srcCompat="@drawable/ic_drag_handle" />

            <View
                android:id="@+id/primary_stroke_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_stroke_green"
                android:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_delete_button"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:background="@drawable/oval_transparent_grey"
        android:scaleType="centerInside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_white_cross" />

</androidx.constraintlayout.widget.ConstraintLayout>