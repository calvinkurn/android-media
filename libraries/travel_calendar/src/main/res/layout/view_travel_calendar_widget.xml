<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/calendar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/spacing_lvl4">

        <com.tokopedia.design.component.Tabs
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl5"
            android:background="@color/Unify_NN0"
            android:elevation="@dimen/spacing_lvl1"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/Unify_GN500"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/Unify_GN500"
            app:tabTextAppearance="@style/Tabs.Secondary"
            app:tabTextColor="@color/Unify_NN950_32" />

        <com.tokopedia.travelcalendar.view.widget.quickfilter.custom.CustomViewQuickFilterView
            android:id="@+id/quick_filter_months"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab_layout"
            android:background="@color/Unify_NN0" />

        <com.tokopedia.travelcalendar.view.widget.CalendarPickerView
            android:id="@+id/calendar_picker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quick_filter_months"
            android:background="@color/Unify_NN0"
            android:paddingTop="@dimen/spacing_lvl4" />

        <com.tokopedia.travelcalendar.view.widget.HolidayWidgetView
            android:id="@+id/holiday_widget_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/calendar_picker_view"
            android:layout_alignParentBottom="true"
            android:background="@color/Unify_NN50" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>