<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/days_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl7"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/train_calender_label_day_name_sunday"
            android:textColor="@color/Unify_R600"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/train_calender_label_day_name_monday"
            android:textColor="@color/Unify_N700_68"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/train_calender_label_day_name_tuesday"
            android:textColor="@color/Unify_N700_68"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/train_calender_label_day_name_wednesday"
            android:textColor="@color/Unify_N700_68"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/train_calender_label_day_name_thursday"
            android:textColor="@color/Unify_N700_68"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/train_calender_label_day_name_friday"
            android:textColor="@color/Unify_N700_68"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/train_calender_label_day_name_saturday"
            android:textColor="@color/Unify_N700_68"
            android:textSize="12sp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/days_label"
        android:background="@color/Unify_N0"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:scrollbars="none" />

</merge>