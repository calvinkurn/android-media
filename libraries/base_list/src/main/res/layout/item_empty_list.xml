<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2" />
    <!-- Untuk onRetry satu halaman -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/no_result_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_empty_state"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:contentDescription="@null" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_empty_title_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:layout_margin="3dp"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        android:gravity="center"
        android:maxWidth="250dp"
        android:textColor="@color/Unify_NN950_96"
        tools:text="ajasjd aiahkshj akshdkhkusdi" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_empty_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        app:typographyType="display_2"
        android:layout_margin="3dp"
        android:gravity="center"
        android:maxLines="4"
        android:textColor="@color/Unify_NN950_68"
        tools:text="jsdjjdjhds jsjdjsjsj kihakshkjsadjs sugdjghsadhsahdghsagdh hjashasg" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_empty_content_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_GN500"
        app:typographyType="display_2"
        android:layout_margin="20dp"
        android:visibility="gone"
        tools:text="@string/app_name" />

    <!-- text will be override programmatically -->
    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button_add_promo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        android:padding="8dp"
        android:textColor="@color/Unify_GN500"
        android:visibility="visible"
        tools:text="@string/app_name" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
