<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.db_inspector">

    <application>
        <activity
            android:name=".presentation.activity.DbInspectorActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/title_app_db_inspector"
            android:theme="@style/Theme.WhiteUnify"
            android:taskAffinity="com.tokopedia.db_inspector.task"
            android:exported="true">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_global"
                    android:path="@string/path_db_inspector"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>


    </application>
</manifest>