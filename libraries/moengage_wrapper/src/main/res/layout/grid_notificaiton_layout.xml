<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/moengage_layout_collapsed" />

    <LinearLayout
        android:id="@+id/ll_topGridParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_gridOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/iv_gridTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/iv_gridThree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:contentDescription="@null" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottomGridParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_gridFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/iv_gridFive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:contentDescription="@null" />


        <ImageView
            android:id="@+id/iv_gridSix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:contentDescription="@null" />
    </LinearLayout>
</LinearLayout>