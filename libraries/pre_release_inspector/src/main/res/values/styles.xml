<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ViewInspectorTextStyle" parent="TextAppearance.AppCompat"/>

    <style name="ViewInspectorTextStyle.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/view_inspector_default_text_color_dark</item>
    </style>

    <style name="ViewInspectorTextStyle.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewInspectorTextStyle.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/view_inspector_default_text_color_dark</item>
    </style>

    <style name="ViewInspectorTextStyle.Large.Bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/view_inspector_default_text_color_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
