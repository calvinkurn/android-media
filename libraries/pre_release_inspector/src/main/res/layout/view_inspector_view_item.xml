<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/view_inspector_default_item_padding"
    android:background="@color/view_inspector_white">

    <TextView
        android:id="@+id/sectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ViewInspectorTextStyle.Medium.Bold"
        android:layout_marginBottom="@dimen/view_inspector_default_item_padding"
        tools:text="Section Title"/>

    <TextView
        android:id="@+id/itemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ViewInspectorTextStyle.Medium"
        tools:text="Item"/>

    <LinearLayout
        android:id="@+id/propertyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"/>

</LinearLayout>