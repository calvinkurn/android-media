<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notif_review_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/img_notif"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/rate_title"
        android:layout_alignBottom="@+id/rate_message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toStartOf="@+id/rate_title"
        android:layout_toLeftOf="@+id/rate_title"/>

    <TextView
        android:id="@+id/rate_title"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:maxLines="2"
        android:visibility="visible" />

    <TextView
        android:id="@+id/rate_message"
        style="@style/TextAppearance.Compat.Notification.Info.Media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rate_title"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/img_notif"
        android:layout_toLeftOf="@+id/img_notif"
        android:maxLines="3" />

    <LinearLayout
        android:id="@+id/rating_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rate_message"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rate_1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_stars_disable_xxl" />

        <ImageView
            android:id="@+id/rate_2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_stars_disable_xxl" />

        <ImageView
            android:id="@+id/rate_3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_stars_disable_xxl" />

        <ImageView
            android:id="@+id/rate_4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_stars_disable_xxl" />

        <ImageView
            android:id="@+id/rate_5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_stars_disable_xxl" />

    </LinearLayout>
</RelativeLayout>