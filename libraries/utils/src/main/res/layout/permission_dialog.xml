<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/Neutral_N0"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="24dp">

    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#B3000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Title Goes Here" />

    <TextView
        android:id="@+id/tv_desc_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5sp"
        android:textColor="#B3000000"
        android:textSize="14sp"
        tools:text="Make the copy compact to communicate what you want, approx 50 character like this" />

    <TextView
        android:id="@+id/btn_ok_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@null"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#42b549"
        android:textSize="14sp"
        tools:text="CTA Here" />

    <TextView
        android:id="@+id/btn_cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@null"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#8a000000"
        android:textSize="14sp"
        tools:text="CTA Here" />

</LinearLayout>