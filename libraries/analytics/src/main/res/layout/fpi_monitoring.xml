<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/Unify_NN0_68"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/fpiPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:gravity="end"
        android:padding="2dp"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:ignore="SmallSp"
        tools:text="100%" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/fpiRenderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="60dp"
        android:gravity="end"
        android:textSize="10sp"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@+id/fpiPercentage"
        app:layout_constraintTop_toTopOf="@+id/fpiPercentage"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:ignore="SmallSp"
        tools:text="99.99ms" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/fpiFps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="42dp"
        android:gravity="end"
        android:padding="2dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/reload"
        app:layout_constraintStart_toEndOf="@+id/fpiRenderTime"
        app:layout_constraintTop_toTopOf="@+id/fpiRenderTime"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:ignore="SmallSp"
        tools:text="60fps" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/reload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="2dp"
        app:icon_name="RELOAD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>