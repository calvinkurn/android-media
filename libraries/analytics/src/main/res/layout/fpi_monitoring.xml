<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/Unify_NN0_68"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/activityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:gravity="start"
        android:padding="2dp"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="debug_debug_debug_debug_MainParentActivity (home_perf_trace)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/launchTimeTTFL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:gravity="end"
        android:padding="2dp"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="TTFL: 100ms" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/launchTimeTTIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:gravity="end"
        android:padding="2dp"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="TTIL: 400ms" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/fpiPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="2dp"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="100%" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/fpiRenderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="10sp"
        android:padding="2dp"
        tools:ignore="SmallSp"
        tools:text="99.99ms" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/fpiFps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="2dp"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        tools:text="60fps" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/reload"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="2dp"
        app:icon_name="RELOAD"/>
</LinearLayout>
