    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_dialog_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_2"
        app:typographyType="body_2"
        tools:text="Mau lapor bug atau kirim feedback?" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_with_screenshot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="Dengan Screenshot"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="Mulai Rekam Video"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_to_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="Langsung ke Form"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="Batalkan"
        android:textStyle="bold"
        app:unifyButtonVariant="ghost"
        android:textSize="@dimen/sp_16"/>

</LinearLayout>