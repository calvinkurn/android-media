<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.cameraview.CameraView
        android:id="@+id/cameraView"
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:cameraPlaySounds="true"
        app:cameraGrid="off"
        app:cameraFlash="off"
        app:cameraAudio="on"
        app:cameraHdr="off"
        app:cameraFacing="back"
        app:cameraVideoSizeAspectRatio="1:1"
        app:cameraGestureTap="focusWithMarker"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16">

        <LinearLayout
            android:layout_above="@+id/btnRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@android:color/darker_gray"
                tools:text="@string/title_record_duration"
                android:text="@string/title_record_duration" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:layout_margin="6dp"
                android:textColor="@android:color/black"
                tools:text="01:00"
                android:text="@string/videopicker_duration_default" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/dp_8"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/dp_8"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/ic_auto_flash"
            tools:visibility="visible" />

        <FrameLayout
            android:id="@+id/btnRecord"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_photo_button"
                android:padding="@dimen/dp_4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/take_photo_button" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/btnFlip"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/dp_8"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/dp_8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_flip_camera" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/dp_8"/>

</RelativeLayout>