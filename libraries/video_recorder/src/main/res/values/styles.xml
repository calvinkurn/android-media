<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="progressBarStyle">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_green</item>
    </style>

    <style name="VideoPickerTab" parent="TextAppearance.Design.Tab">
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="tabTextColor">@color/grey_500</item>
        <item name="tabTextAppearance">@style/TitlePagePickerIndicator</item>
        <item name="tabSelectedTextColor">@color/font_black_primary_70</item>
    </style>

    <style name="TitlePagePickerIndicator">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>