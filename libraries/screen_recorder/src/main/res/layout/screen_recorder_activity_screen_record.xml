<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/Unify_N0"
    tools:context=".ScreenRecorderActivity">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_recorder_default_padding"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/screen_record_info_requesting_permissions"/>

    <CheckBox
        android:id="@+id/checkboxRecordMic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_recorder_default_padding"
        android:textSize="12sp"
        android:textAlignment="center"
        android:gravity="center"
        android:checked="true"
        android:text="@string/screen_record_mic_record_option"/>

    <Button
        android:id="@+id/btnActivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/screen_recorder_button_activate_text"/>

</LinearLayout>