<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/imagepicker_insta_com_toolbar_height"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/toolbar_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_com_toolbar_nav_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="14dp"
        android:paddingEnd="@dimen/dp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagepicker_insta_com_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_com_toolbar_icon"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_com_toolbar_nav_icon"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/toolbar_text_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_com_toolbar_icon"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/img_com_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Unify_NN600"
            tools:text="Post Sebagai"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/img_com_toolbar_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/imagepicker_insta_com_dp_3_n"
            android:ellipsize="end"
            android:textColor="@color/Unify_NN950"
            android:lines="1"
            tools:text="Jonathan Darwin"
            app:typographyType="heading_4"
            app:typographyWeight="bold" />

    </LinearLayout>
    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/content_creator_expand_icon"
        android:layout_width="@dimen/unify_space_24"
        android:layout_height="@dimen/unify_space_24"
        android:layout_marginEnd="@dimen/unify_space_24"
        app:icon_color_light_enable="@color/Unify_N400"
        app:icon_name = "CHEVRON_DOWN"
        app:icon_enable_state="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/toolbar_text_layout"
         />

</androidx.constraintlayout.widget.ConstraintLayout>

</merge>