<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_badge"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/unify_space_8"
        app:unify_image_corner_radius="0"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        app:typographyWeight="bold"
        app:typographyType="heading_4"
        android:layout_marginStart="@dimen/unify_space_8"
        tools:text="Jonathan Darwin"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_badge"
        />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/content_creator_expand_icon"
        android:layout_width="@dimen/unify_space_24"
        android:layout_height="@dimen/unify_space_24"
        android:layout_marginStart="@dimen/unify_space_16"
        app:icon_color_light_enable="@color/Unify_NN900"
        app:icon_name = "CHEVRON_RIGHT"
        app:icon_enable_state="true"
        android:foregroundGravity="right"
        android:layout_gravity="center_vertical|right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/tv_account_name"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>