<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.webview">
    <application android:label="@string/app_name">
        <activity
            android:name=".BaseSimpleWebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity android:name="com.tokopedia.webview.download.BaseDownloadAppLinkActivity"
            android:label="@string/tokopedia"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>
        <activity
            android:name=".WebViewActivity"
            android:hardwareAccelerated="true"
            android:label="@string/tokopedia"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:pathPattern="@string/path_webview"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
