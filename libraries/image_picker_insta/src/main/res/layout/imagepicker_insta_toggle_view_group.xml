<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.imagepicker_insta.views.AssetImageView
        android:scaleType="centerCrop"
        android:id="@+id/src_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.tokopedia.imagepicker_insta.views.ToggleImageView
        android:id="@+id/image_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.tokopedia.imagepicker_insta.views.ToggleCountLayout
        android:id="@+id/toggle_count_layout"
        android:layout_margin="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>