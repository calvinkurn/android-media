<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_preview_footer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent">

    <ImageView
        android:id="@+id/btn_arrow_back"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_system_action_back_white_24" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title_overlay"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/Unify_N0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/image_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:background="@drawable/bg_image_preview_slider_index"
        android:lineSpacingExtra="@dimen/sp_6"
        android:paddingStart="@dimen/dp_22"
        android:paddingLeft="@dimen/dp_22"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:textColor="@color/Unify_N0"
        app:layout_constraintBottom_toTopOf="@+id/rv_image_list"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_2" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_image_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:alpha="0.7"
        android:background="@color/Unify_N700"
        android:clipToPadding="false"
        android:paddingStart="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>