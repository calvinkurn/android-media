<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24">

        <ImageView
            android:id="@+id/image"
            android:layout_width="280dp"
            android:layout_height="210dp"
            android:src="@drawable/ic_ill_onboarding" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            tools:text="@string/feature_download_title"
            app:typographyType="heading_2"
            android:textStyle="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:padding="5dp"
            app:typographyType="body_2"
            tools:text="@string/feature_download_subtitle"
            android:textSize="12sp" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_download"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            tools:text="@string/start_download"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_loading"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_loading_indeterminate"
            tools:visibility="visible" />
    </LinearLayout>
</ScrollView>