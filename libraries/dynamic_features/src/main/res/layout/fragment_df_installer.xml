<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24">

        <ImageView
            android:id="@+id/image"
            android:layout_width="280dp"
            android:layout_height="210dp"
            android:src="@drawable/ic_ill_onboarding" />

        <LinearLayout
            android:id="@+id/progress_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_32"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress_bar"
                    android:visibility="invisible"
                    app:typographyType="body_2"
                    tools:text="2,450 KB / 23,000 KB" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/progress_text_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress_bar"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    app:typographyType="body_2"
                    tools:text="50%" />
            </RelativeLayout>
        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            tools:text="Downloading"
            app:typographyType="heading_2"
            android:textStyle="bold" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/subtitle_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:padding="5dp"
                    app:typographyType="body_2"
                    tools:text="@string/feature_download_subtitle"
                    android:textSize="12sp" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/button_download"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    app:unifyButtonSize="large"
                    android:text="@string/start_download"/>

<!--                <com.tokopedia.unifyprinciples.Typography-->
<!--                    android:id="@+id/button_cta"-->
<!--                    tools:text="Continue without download"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/dp_48"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_gravity="center_horizontal"-->
<!--                    android:layout_marginTop="@dimen/dp_16"-->
<!--                    android:textColor="@color/font_black_secondary_54"-->
<!--                    android:visibility="gone"-->
<!--                    tools:visibility="visible"-->
<!--                    app:typographyType="body_2"-->
<!--                    app:typographyWeight="bold" />-->

    </LinearLayout>
</androidx.core.widget.NestedScrollView>