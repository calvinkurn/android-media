<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat android:id="@+id/view_group_tutor_content"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_round"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:paddingRight="@dimen/spacing_lvl4"
        android:textColor="#F531353B"
        android:paddingLeft="@dimen/spacing_lvl4"
        tools:text="Insert Title Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:textColor="#F531353B"
        tools:text="Put some descriptions that can describes your new features. Make it simple :)"
        android:paddingBottom="@dimen/spacing_lvl5"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/view_group_indicator"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="start|center_vertical"
            android:gravity="start|center_vertical" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_previous"
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4"
            android:background="@drawable/bg_coachmark_left"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl4"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_next"
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:background="@drawable/bg_coachmark_right"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"/>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>
