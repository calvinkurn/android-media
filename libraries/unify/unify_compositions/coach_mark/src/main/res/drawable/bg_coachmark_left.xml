<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/Green_G500"/>
                    <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_system_coachmark_left_white_24"/>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/Neutral_N75"/>
                    <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_system_coachmark_left_24"/>
        </layer-list>
    </item>

</selector>