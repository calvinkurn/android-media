<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <Switch
            android:id="@+id/sw_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/translator_title"
            android:textColor="@color/Unify_N700_96"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:background="@color/Unify_N700_96" />

    <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/api_key_setting"
            app:typographyWeight="bold"
            android:layout_marginTop="8dp"/>

    <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/curr_key"
            app:typographyWeight="reguler"
            app:typographyType="body_1"/>

    <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_curr_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trnsl_1"
            android:textStyle="italic"
            app:typographyType="small"
            app:typographyWeight="reguler"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/edit_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text_field_placeholder="@string/enter_your_key"
            app:text_field_label_static="true"
            app:text_field_label=""
            app:text_field_input_type="text"/>

    <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_save_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/save_key"
            app:unifyButtonType="alternate"
            app:unifyButtonSize="medium"
            app:unifyButtonVariant="ghost"/>

    <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:text="@string/visit_below"
            app:typographyWeight="reguler"
            app:typographyType="body_1"/>

    <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:text="@string/url"
            app:typographyWeight="reguler"
            app:typographyType="body_1"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="#808080" />

    <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/language_setting"
            app:typographyWeight="bold"/>

    <com.tokopedia.unifyprinciples.Typography
            android:enabled="false"
            android:id="@+id/text_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/curr_language"
            android:textStyle="italic"
            app:typographyWeight="reguler"
            app:typographyType="body_1"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

        <Spinner
                android:enabled="false"
                android:id="@+id/list_origin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        <Spinner
                android:id="@+id/list_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1" />
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_count_char"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/total_chars_translated"
            app:typographyWeight="reguler"
            app:typographyType="body_1"/>

    <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_count_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/total_words_translated"
            android:visibility="gone"
            app:typographyWeight="reguler"
            app:typographyType="body_1"/>

</LinearLayout>