<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <Switch
            android:id="@+id/sw_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translator (ON/OFF)" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="1dp"
            android:background="#808080" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Key Setting"
            android:textStyle="bold" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Key" />

    <TextView
            android:id="@+id/text_curr_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="trnsl.1.1.20190508T115205Z.10630ca1780c554e.a7a33e218b8e806e8d38cb32f0ef91ae07d7ae49"
            android:textSize="8sp"
            android:textStyle="italic" />

    <EditText
            android:id="@+id/edit_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your key" />

    <Button
            android:id="@+id/btn_save_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Save key" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:text="Visit below for new API key" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:text="https://translate.yandex.com/developers" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="#808080" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Language Setting"
            android:textStyle="bold" />

    <TextView
            android:enabled="false"
            android:id="@+id/text_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Current languages:  Bhasa-English"
            android:textStyle="italic" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

        <Spinner
                android:enabled="false"
                android:id="@+id/list_origin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        <Spinner
                android:id="@+id/list_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1" />
    </LinearLayout>

    <TextView
            android:id="@+id/text_count_char"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Total characters translated so far is 854358" />

    <TextView
            android:id="@+id/text_count_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Total words translated so far is 854358"
            android:visibility="gone" />

</LinearLayout>