<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/unify_space_8">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/arrowBack"
            android:layout_width="@dimen/unify_space_32"
            android:layout_height="@dimen/unify_space_32"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_8"
            app:icon_name="CHEVRON_LEFT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/currentPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:textColor="@color/Unify_G500"
            app:layout_constraintBottom_toBottomOf="@id/arrowBack"
            app:layout_constraintStart_toEndOf="@+id/arrowBack"
            app:layout_constraintTop_toTopOf="@+id/arrowBack"
            app:typographyType="heading_4"
            android:text="1" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/arrowForward"
            android:layout_width="@dimen/unify_space_32"
            android:layout_height="@dimen/unify_space_32"
            android:layout_marginStart="@dimen/unify_space_16"
            app:icon_name="CHEVRON_RIGHT"
            app:layout_constraintStart_toEndOf="@+id/currentPageNumber"
            app:layout_constraintTop_toTopOf="@id/arrowBack" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/routeToPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_G500"
            app:layout_constraintBottom_toBottomOf="@id/arrowGo"
            app:layout_constraintEnd_toStartOf="@+id/arrowGo"
            app:layout_constraintTop_toTopOf="@+id/arrowGo"
            app:typographyType="heading_4"
            android:text="Go" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/arrowGo"
            android:layout_width="@dimen/unify_space_32"
            android:layout_height="@dimen/unify_space_32"
            app:icon_name="CHEVRON_RIGHT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/arrowBack" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <com.tokopedia.unifycomponents.TextAreaUnify
            android:id="@+id/pageNumberEditText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/unify_space_4"
            app:layout_constraintEnd_toStartOf="@+id/routeToPage"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:text_area_clearable="false"
            app:text_area_label_static="false"
            app:text_area_max_lines="1"
            app:text_field_input_type="number"
            app:text_field_message="1" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/goToPageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintBottom_toBottomOf="@id/arrowGo"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/arrowForward"
            app:layout_constraintTop_toTopOf="@+id/arrowGo"
            android:layout_marginEnd="@dimen/unify_space_4"
            app:typographyType="heading_4"
            android:text="Go To Page" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>