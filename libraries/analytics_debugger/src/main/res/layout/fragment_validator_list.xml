<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggle_cassava_source"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_lvl4"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/spacing_lvl3"
            android:background="@color/Unify_G400"
            android:checked="true"
            android:textColor="@color/Unify_N0"
            android:textOff="@string/cassava_local_label"
            android:textOn="@string/cassava_network_label" />

        <LinearLayout
            android:id="@+id/searchbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@color/Unify_N50"
            android:descendantFocusability="beforeDescendants"
            android:fitsSystemWindows="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp">

            <EditText
                android:id="@+id/searchbar_textfield"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/analytics_validator_search_label"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/searchbar_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:background="@color/Unify_N50"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_delete_analytics" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>