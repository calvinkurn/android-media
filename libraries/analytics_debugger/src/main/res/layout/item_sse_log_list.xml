<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl3"
    android:layout_marginBottom="@dimen/spacing_lvl3"
    android:background="@color/white"
    >

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sse_log_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        tools:text="Contoh Event Name" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sse_log_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sse_log_title"
        app:typographyType="body_3"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/spacing_lvl3"
        tools:text="{testing}" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sse_log_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sse_log_message"
        app:typographyType="body_3"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_55"
        android:layout_marginTop="@dimen/spacing_lvl3"
        tools:text="2021-11-12 12:12:12" />

</androidx.constraintlayout.widget.ConstraintLayout>