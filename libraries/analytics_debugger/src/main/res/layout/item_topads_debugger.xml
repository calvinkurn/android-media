<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/viewHolderSourceNameText"
            style="@style/TextView"
            android:textColor="@color/topads_item_source_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Source Name" />

        <TextView
            android:id="@+id/viewHolderEventTypeText"
            style="@style/TextView"
            android:textColor="@color/topads_item_source_name"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="eventCategory" />

        <TextView
            android:id="@+id/viewHolderUrlText"
            style="@style/TextView"
            android:textColor="@color/topads_item_url"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Url" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewHolderTimestampText"
                style="@style/TextView"
                android:textColor="@color/topads_item_source_name"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="2018-01-01 01:01:01.000" />

            <TextView
                android:id="@+id/viewHolderStatusText"
                style="@style/TextView"
                android:textColor="@color/topads_status_match"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Match" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
