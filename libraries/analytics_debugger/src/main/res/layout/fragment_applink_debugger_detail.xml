<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/applink_text_timestamp"
            app:typographyType="body_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2017-01-01 01:01:01.111" />

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applink:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/applink_text_name"
                app:typographyType="body_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                tools:text="Lorem ipsum dolor sit amet" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/icon_copy_main_applink"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:icon_enable_state="true"
                app:icon_name="COPY" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_mapped_deeplink"
            app:typographyType="body_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="Mapped Deeplink:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/mapped_deeplink"
                app:typographyType="body_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                tools:text="tokopedia://home" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/icon_copy_mapped_deeplink"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:icon_enable_state="true"
                app:icon_name="COPY" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="Traces:" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/applink_text_traces"
            app:typographyType="small"
            android:textColor="@color/Unify_NN600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="{ dadfa:sdfasdfas...." />

    </LinearLayout>
</ScrollView>