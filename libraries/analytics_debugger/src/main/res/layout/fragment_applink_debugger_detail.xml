<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/applink_text_timestamp"
            style="@style/TextView.Micro.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="2017-01-01 01:01:01.111" />

        <TextView
            style="@style/TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applink:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/applink_text_name"
                style="@style/TextView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                tools:text="Lorem ipsum dolor sit amet" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/icon_copy_main_applink"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:icon_enable_state="true"
                app:icon_name="COPY" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_mapped_deeplink"
            style="@style/TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="Mapped Deeplink:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mapped_deeplink"
                style="@style/TextView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                tools:text="tokopedia://home" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/icon_copy_mapped_deeplink"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:icon_enable_state="true"
                app:icon_name="COPY" />

        </LinearLayout>

        <TextView
            style="@style/TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="Traces:" />

        <TextView
            android:id="@+id/applink_text_traces"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="{ dadfa:sdfasdfas...." />

    </LinearLayout>
</ScrollView>