<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMainExpanded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvReviewPushTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/cm_title_black_255"
        android:textSize="@dimen/cm_sp_14"
        tools:text="Content Title" />

    <TextView
        android:id="@+id/tvReviewPushMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReviewPushTitle"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/cm_light_grey_255"
        android:textSize="@dimen/cm_sp_13"
        tools:text="Content Text" />

    <ImageView
        android:id="@+id/ivProductLargeImage"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_below="@+id/tvReviewPushMessage"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/ll_review_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProductLargeImage"
        android:layout_centerHorizontal="true">

        <include
            android:id="@+id/ivReviewStarOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/cm_layout_star_unselected_big_item" />

        <include
            android:id="@+id/ivReviewStarTwo"
            layout="@layout/cm_layout_star_unselected_big_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cm_dp_6" />

        <include
            android:id="@+id/ivReviewStarThree"
            layout="@layout/cm_layout_star_unselected_big_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cm_dp_6" />

        <include
            android:id="@+id/ivReviewStarFour"
            layout="@layout/cm_layout_star_unselected_big_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cm_dp_6" />

        <include
            android:id="@+id/ivReviewStarFive"
            layout="@layout/cm_layout_star_unselected_big_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cm_dp_6" />

    </LinearLayout>

</RelativeLayout>