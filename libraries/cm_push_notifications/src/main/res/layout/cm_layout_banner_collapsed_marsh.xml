<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/push_noti_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.56"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/cm_status_bar_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_3"
                android:gravity="center_vertical"
                android:text="@string/cm_app_title_name"
                android:textColor="@color/Unify_G500"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/transparent"
                android:src="@drawable/cm_notification_icon_dot" />

            <TextView
                android:id="@+id/push_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_44"
                android:textSize="@dimen/sp_12"
                tools:text="11:00 am" />

        </LinearLayout>

        <TextView
            android:id="@+id/push_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_layout"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="Title"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/push_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/push_title"
            android:layout_marginTop="@dimen/dp_1"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="@tools:sample/lorem/random"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/sp_13" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/push_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.44">

        <ImageView
            android:id="@+id/push_small_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>