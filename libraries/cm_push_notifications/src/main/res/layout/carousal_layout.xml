<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_appIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/qc_launcher" />

    <TextView
        android:id="@+id/tv_appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_appIcon"
        android:layout_alignBottom="@id/iv_appIcon"
        android:layout_toEndOf="@id/iv_appIcon"
        android:layout_toRightOf="@id/iv_appIcon"
        android:text="Tokopedia"
        android:textColor="#42B549"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/rl_MainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_appIcon"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_button_white" />


        <ImageView
            android:id="@+id/ivArrowRight"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/white_circle"
            android:clickable="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_right_default" />

        <ImageView
            android:id="@+id/ivArrowLeft"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/white_circle"
            android:clickable="true"
            android:padding="8dp"
            android:rotation="180"
            android:src="@drawable/ic_arrow_right_default" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_MainLayout"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp" />


</RelativeLayout>


