<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_mainPersist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dms_gray_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_icon6"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/qc_launcher" />

    <LinearLayout
        android:id="@+id/lin_container_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_icon1"
            android:layout_width="@dimen/cm_dp_28"
            android:layout_height="@dimen/cm_dp_28"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/Unify_Static_Black"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_container_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_icon2"
            android:layout_width="@dimen/cm_dp_28"
            android:layout_height="@dimen/cm_dp_28"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/Unify_Static_Black"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_container_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_icon3"
            android:layout_width="@dimen/cm_dp_28"
            android:layout_height="@dimen/cm_dp_28"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/Unify_Static_Black"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_container_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_icon4"
            android:layout_width="@dimen/cm_dp_28"
            android:layout_height="@dimen/cm_dp_28"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/Unify_Static_Black"
            android:textSize="10sp" />

    </LinearLayout>

    <!--Don't convert these image to Vector: Strictly Prohibited-->
    <ImageView
        android:id="@+id/image_icon5"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="4dp"
        app:srcCompat="@drawable/cm_ic_btn_close_black" />

</LinearLayout>
