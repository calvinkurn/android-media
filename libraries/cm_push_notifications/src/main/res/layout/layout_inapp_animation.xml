<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/innerContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dms_cm_inapp_main_bg"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/lottie_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_view_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/ketupat_interaction" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/coupon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/lottie_container">

        <ImageView
            android:id="@+id/iv_coupon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/coupon"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/iv_coupon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:src="@drawable/coupon"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_coupon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:src="@drawable/coupon"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_coupon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:src="@drawable/coupon"
            android:visibility="gone"
            />
    </LinearLayout>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivButtonShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/buttonshare"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/coupon_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/ellipse"
        android:padding="2dp"
        app:icon_name="CLOSE"
        app:layout_constraintBottom_toTopOf="@id/coupon_container"
        app:layout_constraintEnd_toEndOf="@+id/lottie_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
