<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/push_noti_background"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/push_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/cm_sp_13"
            tools:text="Title" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/push_title"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ivStarReview_1"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/cm_ic_star_review_white"/>

            <ImageView
                android:id="@+id/ivStarReview_2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/cm_ic_star_review_white"/>

            <ImageView
                android:id="@+id/ivStarReview_3"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/cm_ic_star_review_white"/>

            <ImageView
                android:id="@+id/ivStarReview_4"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/cm_ic_star_review_white"/>

            <ImageView
                android:id="@+id/ivStarReview_5"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/cm_ic_star_review_white"/>

        </LinearLayout>

</LinearLayout>