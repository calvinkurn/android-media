<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMainCollapsed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvReviewPushTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/cm_dp_16"
        android:layout_toStartOf="@+id/ivProductIcon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/Unify_NN950_96"
        android:textSize="@dimen/cm_sp_14"
        tools:text="Content Title" />

    <ImageView
        android:id="@+id/ivProductIcon"
        android:layout_width="@dimen/cm_dp_40"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/ll_review_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReviewPushTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/cm_dp_16"
        android:layout_marginTop="@dimen/cm_dp_8"
        android:layout_toStartOf="@+id/ivProductIcon">

        <include
            android:id="@+id/ivReviewStarOne"
            layout="@layout/cm_layout_star_unselected_small_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/ivReviewStarTwo"
            layout="@layout/cm_layout_star_unselected_small_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cm_dp_6" />

        <include
            android:id="@+id/ivReviewStarThree"
            layout="@layout/cm_layout_star_unselected_small_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cm_dp_6" />

        <include
            android:id="@+id/ivReviewStarFour"
            layout="@layout/cm_layout_star_unselected_small_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cm_dp_6" />

        <include
            android:id="@+id/ivReviewStarFive"
            layout="@layout/cm_layout_star_unselected_small_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cm_dp_6" />


    </LinearLayout>

</RelativeLayout>