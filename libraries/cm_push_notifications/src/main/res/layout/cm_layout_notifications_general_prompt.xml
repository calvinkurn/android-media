<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/cm_general_prompt_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/cm_notifications_general_prompt_bottomsheet_mainapp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/cm_general_prompt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cm_general_prompt_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="heading_2"
        tools:text="@string/cm_notifications_general_prompt_mainapp_title" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/cm_general_prompt_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cm_general_prompt_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="paragraph_2"
        tools:text="@string/cm_notifications_general_prompt_mainapp_description" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/cm_general_prompt_turn_on_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/cm_notifications_general_prompt_turn_on_notification"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled"
        app:unifyButtonSize="medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cm_general_prompt_description"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>