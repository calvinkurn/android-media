<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collapseMainView"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:tag="base">

    <LinearLayout
        android:id="@+id/notification_main_column"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="40dp"
        android:minHeight="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_collapse_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:textColor="#de000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_collapsed_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:textColor="@color/secondary_text_default_material_light"
            android:textSize="@dimen/cm_sp_13" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_icon_collapsed"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_big_notif_customerapp" />

</FrameLayout>