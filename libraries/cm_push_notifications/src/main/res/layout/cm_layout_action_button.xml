<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status_bar_latest_event_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="bigPicture">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/collapseMainView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="base">

            <LinearLayout
                android:id="@+id/notification_main_column"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/spacing_lvl7"
                android:minHeight="@dimen/cm_dp_45"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_collapse_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:textColor="@color/Unify_N700_96"
                    android:textSize="15sp"
                    tools:title="Tokopedia"/>

                <TextView
                    android:id="@+id/tv_collapsed_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:textColor="@color/Unify_N700_68"
                    android:textSize="@dimen/cm_sp_13" />

                <TextView
                    android:id="@+id/tv_expanded_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadingEdge="horizontal"
                    android:visibility="gone"
                    android:textColor="@color/Unify_N700_68"
                    android:textSize="@dimen/cm_sp_13" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_icon_collapsed"
                android:layout_width="@dimen/cm_dp_38"
                android:layout_height="@dimen/cm_dp_38"
                android:layout_gravity="end"
                android:src="@drawable/ic_big_notif_customerapp" />

        </FrameLayout>

        <ImageView
            android:id="@+id/img_big"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_extra_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_8">

            <LinearLayout
                android:id="@+id/ll_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_button3"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/Unify_N700_96"
                    android:textSize="@dimen/cm_sp_13"
                    tools:text="Title" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_button2"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/Unify_N700_96"
                    android:textSize="@dimen/cm_sp_13"
                    tools:text="Title" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_button1"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:visibility="gone"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tv_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/Unify_N700_96"
                    android:textSize="@dimen/cm_sp_13"
                    tools:text="Title" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>