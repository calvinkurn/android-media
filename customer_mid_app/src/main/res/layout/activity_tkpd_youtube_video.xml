<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/dp_8">

        <TextView
            android:id="@+id/btn_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_sm"
            android:background="@color/green_buy"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/cta_here"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12">

        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back_black_youtube" />

        <TextView
            android:id="@+id/tv_head_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_detail"
            android:paddingRight="@dimen/padding_detail"
            android:text="@string/video_title_bar_lable"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sc_header_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_shadow"
        android:layout_below="@+id/ll_header"
        android:layout_marginBottom="@dimen/dp_5">

        <LinearLayout
            android:id="@+id/header_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="top|center_horizontal"
            android:background="@color/white"
            android:orientation="vertical">


            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                android:paddingLeft="@dimen/padding_detail"
                android:paddingRight="@dimen/padding_detail"
                android:text="@string/loren_impsum"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:paddingLeft="@dimen/padding_detail"
                android:paddingRight="@dimen/padding_detail"
                android:text="@string/video_desc"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_small" />

            <com.tokopedia.abstraction.base.view.widget.TouchViewPager
                android:id="@+id/v_push_bannerpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_16"
                android:visibility="gone" />


            <com.tokopedia.design.viewpagerindicator.CirclePageIndicator
                android:id="@+id/v_pager_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/new_margin_small"
                android:layout_marginRight="@dimen/new_margin_small"
                android:padding="@dimen/dp_2"
                android:visibility="gone"
                app:centered="false"
                app:fillColor="@color/green_nob"
                app:pageColor="@color/grey_400"
                app:radius="@dimen/dp_3"
                app:strokeColor="@color/transparent"
                app:strokeWidth="0dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
