<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.White.StatusBarTransparent" parent="Theme.White">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.TransparentNoAnimation" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="LogisticTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.WhiteUnify" parent="Base.Theme">
        <item name="toolbarTheme">@style/Toolbar.White</item>
        <item name="tabTheme">@style/TabBar.White</item>
        <item name="titleTextAppearance">@style/TitleTextAppearance.White</item>
    </style>

    <style name="Toolbar.White" parent="Base.Toolbar.Theme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/Unify_G600</item>
        <item name="android:background">@color/Unify_N0</item>
        <item name="actionModeBackground">@color/Unify_N0</item>
        <item name="android:actionModeBackground">@color/Unify_N0</item>
        <item name="android:textColorPrimary">@color/Unify_N700_96</item>
        <item name="android:actionMenuTextColor">@color/Unify_N700_96</item>
        <item name="android:textColorSecondary">@color/Unify_N700_96</item>
    </style>

    <style name="TabBar.White" parent="BaseTabBar">
        <item name="android:textSize">@dimen/heading_5</item>
        <item name="android:background">@color/Unify_N0</item>
        <item name="tabTextColor">@color/Unify_N700_96</item>
        <item name="tabTextAppearance">@style/TitlePageWhiteIndicator</item>
        <item name="tabIndicatorColor">@color/Unify_G500</item>
        <item name="tabSelectedTextColor">@color/Unify_G500</item>
    </style>

    <style name="TitlePageWhiteIndicator">
        <item name="android:textSize">@dimen/heading_5</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextAppearance.White">
        <item name="android:textColor">@color/Unify_N700_96</item>
    </style>
</resources>