<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Tokopedia3.PlainGreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/tkpd_main_green</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Tokopedia3.CustomerApp.Launcher" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/customerapp_launch_screen</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/pure_transparent</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">

        <!-- No backgrounds, titles or window float -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="TokopediaTransparentStatus" parent="Theme.Tokopedia3">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ShopPageActivityTheme" parent="Theme.White">
        <item name="android:actionButtonStyle">@style/ShopPageActionBarMenuItemStyle</item>
    </style>

    <style name="ShopPageActionBarMenuItemStyle">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/dp_4</item>
    </style>

    <style name="WaitingPaymentOrderTheme" parent="@style/Theme.White" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>