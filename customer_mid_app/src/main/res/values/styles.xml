<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <dimen name="margin_small">10dp</dimen>
    <dimen name="fonts">14sp</dimen>
    <dimen name="margin_med">20dp</dimen>
    <dimen name="padding_small">10dp</dimen>
    <dimen name="padding_med">20dp</dimen>

    <style name="ToolbarSubtitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Tokopedia3.PlainGreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/tkpd_main_green</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Tokopedia3.CustomerApp.Launcher" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/customerapp_launch_screen</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/pure_transparent</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">

        <!-- No backgrounds, titles or window float -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="ShopPageActivityTheme" parent="Theme.White">
        <item  name="android:actionButtonStyle">@style/ShopPageActionBarMenuItemStyle</item>
    </style>

    <style name="ShopPageActionBarMenuItemStyle" >
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/dp_4</item>
    </style>

    <style name="SomListTheme" parent="@style/Theme.White">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="WaitingPaymentOrderTheme" parent="@style/Theme.White" />
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WebViewToolbarText" parent="MediumText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="WebViewToolbarSubtitleText"
        parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="BuyerOrderDetailTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ReviewMediaPlayer.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:ambientShadowAlpha">0</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>