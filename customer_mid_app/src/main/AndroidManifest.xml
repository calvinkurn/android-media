<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.customer_mid_app">

    <application>

        <activity
            android:name="com.tokopedia.tkpd.ConsumerSplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.Tokopedia3.CustomerApp.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="tokopedia.link"
                    android:scheme="https"/>
                <data
                    android:host="tokopedia-alternate.app.link"
                    android:scheme="https"/>
                <data
                    android:host="tokopedia.app.link"
                    android:scheme="https"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.tokopedia.tkpd.FallbackActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3.PlainGreen">
        </activity>

        <activity
            android:name="com.tokopedia.tkpd.deeplink.activity.DeepLinkActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_deep_link"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern=".*"
                    android:scheme="https"/>

                <data
                    android:host="staging.tokopedia.com"
                    android:pathPattern="qrcode-login"
                    android:scheme="https"/>

            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="tokopedia.by"
                    android:pathPattern="/.*"
                    android:scheme="https" />
                <data
                    android:host="tokopedia.by"
                    android:pathPattern="/.*"
                    android:scheme="http" />

            </intent-filter>

        </activity>

        <activity android:name="com.tokopedia.navigation.presentation.activity.MainParentActivity"
            android:exported="true"
            android:label="Tokopedia"
            android:launchMode="singleTask"
            android:theme="@style/TokopediaTransparentStatus"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">

            <meta-data
                android:name="APPS_HOME"
                android:value="true"/>

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_home"
                    android:path="@string/path_navigation"/>
            </intent-filter>

        </activity>

        <activity
            android:name="com.tokopedia.tkpd.goldmerchant.GoldMerchantRedirectActivity"
            android:label="@string/label_gold_merchant"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_gold_merchant_redirect"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.tokopedia.tkpd.deeplink.DeeplinkHandlerActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="tokopedia"/>
                <data android:scheme="sellerapp"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.tokopedia.tkpd.redirect.RedirectCreateShopActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3" >
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_merchant"
                    android:path="@string/path_redirect_create_shop"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.tokopedia.tkpd.thankyou.view.ThanksTrackerService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name="com.tokopedia.tkpd.home.TkpdYoutubeVideoActivity"
            android:screenOrientation="sensor" />

        <activity
            android:name="com.tokopedia.tkpd.nfc.NFCHandlerActivity"
            android:theme="@style/Theme.White">
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
        </activity>

        <receiver android:name="com.tokopedia.tkpd.receiver.AppMediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
