<?xml version="1.0" encoding="utf-8"?>
<actions>
    <action intentName="actions.intent.GET_ORDER">
        <fulfillment
            fulfillmentMode="actions.fulfillment.SLICE"
            urlTemplate="content://com.tokopedia.seller.action.slices/order{?orderDate}">
            <parameter-mapping
                intentParameter="order.orderDate"
                urlParameter="orderDate"/>
        </fulfillment>
    </action>


    <action intentName="actions.intent.OPEN_APP_FEATURE">
        <parameter name="feature">
            <entity-set-reference entitySetId="ShowcaseEntitySet" />
        </parameter>

        <fulfillment
            fulfillmentMode="actions.fulfillment.DEEPLINK"
            urlTemplate="tokopedia-android-internal://merchant/shop-showcase-add" />
    </action>
    
    <entity-set entitySetId="ShowcaseEntitySet">
        <entity identifier="createNewShowcase" name="Create new showcase" />
    </entity-set>


    
