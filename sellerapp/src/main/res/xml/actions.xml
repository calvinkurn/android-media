<?xml version="1.0" encoding="utf-8"?>
<actions>
    <action intentName="actions.intent.GET_ORDER">
        <fulfillment
            fulfillmentMode="actions.fulfillment.SLICE"
            urlTemplate="content://com.tokopedia.seller.action.slices/order{?orderDate}">
            <parameter-mapping
                intentParameter="order.orderDate"
                urlParameter="orderDate"/>
        </fulfillment>
    </action>


    <action intentName="actions.intent.OPEN_APP_FEATURE">

        <fulfillment
            fulfillmentMode="actions.fulfillment.DEEPLINK"
            urlTemplate="sellerapp://{?featureName}">
            <parameter-mapping
                intentParameter="feature"
                urlParameter="featureName" />
        </fulfillment>

        <parameter name="feature">
            <entity-set-reference entitySetId="FeatureEntitySet" />
        </parameter>

    </action>

    <entity-set entitySetId="FeatureEntitySet">
        <entity name="Home" identifier="home" />
    </entity-set>


    
