<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Tokopedia3.PlainGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/Unify_G500</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ShopPageActivityTheme" parent="Theme.White">
        <item  name="android:actionButtonStyle">@style/ShopPageActionBarMenuItemStyle</item>
    </style>

    <style name="ShopPageActionBarMenuItemStyle" >
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/dp_4</item>
    </style>

    <style name="WebViewToolbarText" parent="MediumText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/sa_dms_black_70</item>
    </style>

    <style name="WebViewToolbarSubtitleText"
        parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/sa_dms_black_54</item>
    </style>

    <style name="Theme.AppCompat.Transparent.NoActionBar.Fingerprint" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ReviewMediaPlayer.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:ambientShadowAlpha">0</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CentralizedPromoTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>