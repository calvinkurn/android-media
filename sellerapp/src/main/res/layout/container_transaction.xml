<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transaction_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="@dimen/padding_vs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/reputation_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_header_container"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaksi"
                android:textSize="@dimen/card_header_title"
                android:textColor="#a1a1a1"
                android:textStyle="bold"
                android:layout_marginLeft="9dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/message_complain"
                android:layout_toEndOf="@+id/message_complain" />

            <ImageView
                android:layout_width="@dimen/card_header_img_width"
                android:layout_height="@dimen/card_header_img_height"
                android:src="@drawable/transaction_icon_40_x_40_px"
                android:id="@+id/message_complain"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                />

        </RelativeLayout>

        <View
            android:layout_marginBottom="@dimen/padding_vs"
            android:id="@+id/line_break"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineSellerHome" />

        <LinearLayout
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:id="@+id/arc_view_container"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="vertical">
        </LinearLayout>
        <TextView
            android:id="@+id/success_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Sukses"
            android:textSize="12sp"
            android:textColor="#7D000000"
            android:paddingLeft="9dp"
            />

        <TextView
            android:id="@+id/from_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="Dari 0 Transaksi"
            android:textColor="#61000000"
            android:paddingLeft="9dp" />
    </LinearLayout>
</FrameLayout>