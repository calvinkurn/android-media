<?xml version="1.0" encoding="utf-8"?>
<me.henrytao.smoothappbarlayout.SmoothAppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/smooth_app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true">

    <com.tokopedia.sellerapp.home.utils.CollapsingToolbarLayoutCust
        android:id="@+id/collapsing_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        app:contentScrim="@color/tkpd_main_green"
        app:expandedTitleMarginEnd="12dp"
        app:expandedTitleMarginStart="12dp"
        app:expandedTitleTextAppearance="@android:color/transparent"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            app:layout_collapseMode="parallax">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/seller_home_shop_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="22.5dp"
                    android:scaleType="fitXY"
                    android:src="@color/green_800"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/seller_home_shop_icon"
                    android:layout_width="67.5dp"
                    android:layout_height="67.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@android:color/holo_blue_bright"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="2dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="9.5dp">

                <TextView
                    android:id="@+id/seller_home_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Nama Toko"
                    android:textColor="#666666"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="15dp"
                        android:src="@drawable/location_icon_40_x_40_px"/>

                    <TextView
                        android:id="@+id/seller_home_shop_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="Nama Tempat"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"/>
                </LinearLayout>

                <com.tokopedia.sellerapp.home.view.BadgeContainer
                    android:id="@+id/seller_home_badge_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/white"/>

                <LinearLayout
                    android:id="@+id/gold_merchant_announcement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">
                    <TextView
                        android:id="@+id/gold_merchant_announcement_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/tkpd_green_header"
                        android:textSize="13dp"/>
                    <ImageView
                        android:id="@+id/gold_merchant_announcement_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/chevron_right"
                        android:visibility="gone"
                        />
                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/background_header_home_seller">

                    <RelativeLayout
                        android:id="@+id/seller_home_deposit_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/seller_home_separator">

                        <TextView
                            android:id="@+id/seller_home_deposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Rp 0"
                            android:textColor="#ff5722"
                            android:textSize="16.5sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/seller_home_deposit"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp"
                            android:text="Saldo Tokopedia"
                            android:textColor="#a1a1a1"
                            android:textSize="12sp"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/seller_home_separator"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@color/colorLineSellerHome"/>

                    <com.tokopedia.seller.home.view.ReputationView
                        android:id="@+id/seller_home_reputation_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/seller_home_separator"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/seller_home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </com.tokopedia.sellerapp.home.utils.CollapsingToolbarLayoutCust>>
</me.henrytao.smoothappbarlayout.SmoothAppBarLayout>