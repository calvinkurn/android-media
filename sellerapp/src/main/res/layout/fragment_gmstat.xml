<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_gmstat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.sellerapp.gmstat.views.GMStatActivityFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_gmstat">

    <LinearLayout
        android:id="@+id/parent_fragment_gmstat"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/header_gmstat"
            layout="@layout/widget_header_gmstat"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gmstat_recyclerview"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        
        <LinearLayout
            android:layout_below="@+id/gmstat_recyclerview"
            android:id="@+id/chart_container"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:paddingLeft="@dimen/gmstat_padding_item_left_right"
            android:paddingRight="@dimen/gmstat_padding_item_left_right"
            android:paddingBottom="@dimen/gmstat_padding_item_left_right"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom"
            android:background="@android:color/white"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/gross_income_graph_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/gross_income_graph_container2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.db.chart.view.LineChartView
                        android:id="@+id/gross_income_graph2"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        />
                </LinearLayout>
            </HorizontalScrollView>

            <com.tokopedia.sellerapp.gmstat.library.LoaderImageView
                android:id="@+id/gross_income_graph2_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/page_1"
                android:layout_gravity="center_vertical"
                app:use_gradient="true"
                android:visibility="gone"
                />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/gmstat_margin_bottom"
            android:id="@+id/popular_product_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom"
            android:layout_below="@id/chart_container">
            <include
                android:id="@+id/popular_product"
                layout="@layout/widget_popular_product"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
            <include
                android:id="@+id/popular_product_loading"
                layout="@layout/popular_product_loading"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="gone"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginRight="@dimen/gmstat_margin_bottom"
            android:layout_marginLeft="@dimen/gmstat_margin_bottom"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom"
            android:id="@+id/transaction_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popular_product_container"
            >
            <include layout="@layout/widget_transaction_data"
                android:id="@+id/transaction_data"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
            <include layout="@layout/widget_transaction_data_loading"
                android:id="@+id/transaction_data_loading"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="gone"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginRight="@dimen/gmstat_margin_bottom"
            android:layout_marginLeft="@dimen/gmstat_margin_bottom"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom"
            android:id="@+id/buyer_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/transaction_data_container">
            <include layout="@layout/widget_buyer_data"
                android:id="@+id/market_insight"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
            <include layout="@layout/widget_buyer_data_loading"
                android:id="@+id/market_insight_loading"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="gone"
                />
        </android.support.v7.widget.CardView>
        
        <android.support.v7.widget.CardView
            android:layout_marginRight="@dimen/gmstat_margin_bottom"
            android:layout_marginLeft="@dimen/gmstat_margin_bottom"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom"
            android:id="@+id/market_insight_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buyer_data_container">

            <include layout="@layout/widget_market_insight"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/market_insight_real"
                />
            <include layout="@layout/widget_market_insight_loading"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/market_insight_loading2"
                />
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>
