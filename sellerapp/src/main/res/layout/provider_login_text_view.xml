<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/provider_layout"
              android:layout_width="match_parent"
              android:layout_height="@dimen/btn_height"
              android:layout_gravity="center"
              android:layout_margin="2dp"
              android:gravity="center"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/margin_sm"
              android:paddingRight="@dimen/margin_sm">

    <ImageView
        android:id="@+id/provider_image"
        android:layout_width="@dimen/icon_prod_size"
        android:layout_height="@dimen/icon_prod_size"
        android:adjustViewBounds="true"
        tools:src="@drawable/notif_red"
        />

    <TextView
        android:id="@+id/provider_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/icon_prod_size"
        android:layout_weight="4"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@color/black_70"
        tools:text="masuk dengan facebook"
        />
</LinearLayout>