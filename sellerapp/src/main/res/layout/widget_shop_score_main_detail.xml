<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextView.Body1"
            android:text="@string/title_shop_score_widget_home" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/text_view_shop_score_big"
                style="@style/TextView.Body1"
                tools:text="@string/label_empty_value" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/arrow_left"
                android:layout_width="@dimen/image_width_xxxs"
                android:layout_height="@dimen/image_width_xxs"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_right" />

        </LinearLayout>
    </RelativeLayout>

    <com.tokopedia.seller.shopscore.view.widget.ShopScoreMainProgressBarWithLimit
        android:id="@+id/progress_bar_shop_score_with_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="6dp" />
</LinearLayout>