<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <include layout="@layout/partial_dashboard_header_loading_view" />
    </FrameLayout>

    <com.tokopedia.design.card.EmptyCardContentView
        android:id="@+id/empty_card_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:padding="@dimen/margin_sm"
        app:eccv_action_text="@string/app_id"
        app:eccv_content_text="@string/gm_statistic_no_market_insight_in_this_period"
        app:eccv_icon="@drawable/ic_gm_statistic_error" />

</RelativeLayout>