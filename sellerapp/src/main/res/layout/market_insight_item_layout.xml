<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaos Raglan"
        android:textSize="14sp"
        android:textColor="#B2000000"
        android:id="@+id/market_insight_keyword" />

    <TextView
        android:text="612.019x"
        android:textSize="12sp"
        android:textColor="#61000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/market_insight_number" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:srcCompat="@drawable/ic_search_icon"
        android:layout_toLeftOf="@id/market_insight_number"
        android:id="@+id/zoom_icon" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/market_insight_keyword"
        app:rcBackgroundColor="@android:color/transparent"
        app:rcBackgroundPadding="2dp"
        app:rcMax="100"
        app:rcProgress="90"
        app:rcProgressColor="#f6b323"
        app:rcRadius="20dp"
        android:id="@+id/market_insight_progress" />
</RelativeLayout>
