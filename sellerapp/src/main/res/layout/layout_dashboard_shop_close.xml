<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vg_shop_close"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_ms"
    android:background="@drawable/rect_green_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small_sm">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/image_width_xs"
            android:layout_height="@dimen/image_width_xs"
            tools:src="@drawable/icon_closed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_vs"
            android:paddingRight="@dimen/margin_vs">

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextView.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/dashboard_your_shop_is_closed_until_xx" />

            <TextView
                android:id="@+id/tv_description"
                style="@style/TextView.Caption.BlackSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_vs"
                tools:text="Closed Description" />

            <TextView
                android:id="@+id/tv_action"
                style="@style/TextView.Body1.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ms"
                android:background="@drawable/rect_stroke_light_gray"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/margin_ms"
                android:text="@string/open_shop" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>