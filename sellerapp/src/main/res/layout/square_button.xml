<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.sellerapp.home.boommenu.ShadowLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shadow_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:sl_shadowColor="@color/transparent"
    app:sl_dx="0dp"
    app:sl_dy="0dp"
    >

    <RelativeLayout
        android:id="@+id/square_button_container"
        android:layout_width="@dimen/default_circle_button_corner_2radius"
        android:layout_height="@dimen/default_circle_button_corner_2radius">
        
        <ImageView
            android:id="@+id/image"
            android:src="@android:color/darker_gray"
            android:layout_width="67.5dp"
            android:layout_height="31.5dp"
            android:layout_above="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12.75dp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textSize="11.25sp"
            android:layout_marginBottom="8.5dp"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:text="Tambah Produk"
            />
    </RelativeLayout>

</com.tokopedia.sellerapp.home.boommenu.ShadowLayout>