<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/bg_line_separator"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        style="@style/LabelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            app:use_gradient="true"
            android:layout_width="@dimen/dashboard_icon_shop_height"
            android:layout_height="@dimen/dashboard_icon_shop_height" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:orientation="vertical">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_xl"
                android:layout_height="@dimen/font_loading_width_xs"
                app:use_gradient="true"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_l"
                android:layout_height="@dimen/font_loading_width_xs"
                android:layout_marginTop="@dimen/margin_sm"
                app:use_gradient="true"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/LabelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_sm"
        android:paddingRight="@dimen/margin_sm">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_l"
                android:layout_height="@dimen/font_loading_width_xs"
                app:use_gradient="true"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_l"
                android:layout_height="@dimen/font_loading_width_xs"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:use_gradient="true"/>
        </RelativeLayout>


        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_loading_width_xs"
            android:layout_marginTop="@dimen/margin_sm"
            app:use_gradient="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_sm">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_xs"
                android:layout_height="@dimen/font_loading_width_xxs"
                app:use_gradient="true"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_s"
                android:layout_height="@dimen/font_loading_width_xxs"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:use_gradient="true"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashboard_widget_height">

        <LinearLayout
            style="@style/LabelLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_l"
                android:layout_height="@dimen/font_loading_width_xs"
                app:use_gradient="true"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_m"
                android:layout_height="@dimen/font_loading_width_xs"
                android:layout_marginTop="@dimen/margin_small"
                app:use_gradient="true"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_m"
                android:layout_height="@dimen/font_loading_width_xxs"
                android:layout_marginTop="@dimen/margin_small"
                app:use_gradient="true"/>
        </LinearLayout>

        <include layout="@layout/partial_separator_vertical" />

        <LinearLayout
            style="@style/LabelLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_l"
                android:layout_height="@dimen/font_loading_width_xs"
                app:use_gradient="true"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_m"
                android:layout_height="@dimen/font_loading_width_m"
                android:layout_marginTop="@dimen/margin_small"
                app:use_gradient="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>