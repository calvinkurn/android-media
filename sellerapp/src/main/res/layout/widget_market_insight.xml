<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/gmstat_padding_item_left_right"
    android:paddingTop="@dimen/gmstat_padding_item_top_transaction"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/market_insight_header"
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_wawasan_pasar_icon"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingTop="3dp"
            android:textColor="#f6b323"
            android:text="Wawasan Pasar"/>
    </LinearLayout>

    <View
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/market_insight_header"
        android:background="#1E000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator_1"
        >

        <LinearLayout
            android:id="@+id/market_insight_gold_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
            android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/market_insight_header_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kata kunci pencarian terpopuler"
                android:layout_marginBottom="16dp"
                android:textColor="#89000000"
                android:textSize="11sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/market_insight_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"/>

            <TextView
                android:id="@+id/market_insight_footer_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kata kunci ini berdasarkan kategori dari \“Kaos\”"
                android:textColor="#89000000"
                android:textSize="11sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/market_insight_non_gold_merchant"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#CD000000"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/ic_lock_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dapatkan akses untuk melihat\ndata lengkap statistik produk"
                    android:textSize="14sp"
                    android:textColor="#80ffffff"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="244dp"
                android:layout_height="52dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/rounded_corner">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upgrade ke Gold Merchant"
                    android:textColor="#42b549"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <!--<com.tokopedia.sellerapp.gmstat.views.NChart-->
            <!--android:id="@+id/transaction_chart"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="0.7"-->
            <!--android:layout_height="91.3dp" />-->
        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>
