<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_pie"
        android:layout_toRightOf="@id/reputation_view">

        <com.tokopedia.sellerapp.home.view.SimplePieChart
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:id="@+id/pie"/>

        <TextView
            android:id="@+id/percentage_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="100%"
            android:textStyle="bold"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_message_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi Sukses"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/total_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dari 21.421 Transaksi"
            android:layout_marginTop="@dimen/margin_vs"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>