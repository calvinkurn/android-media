<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/gmstat_padding_item_left_right"
    android:paddingBottom="@dimen/gmstat_padding_item_top_transaction"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/title_transaction_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#89000000"
        android:id="@+id/textDescription"
        android:textSize="12sp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0.614K"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#B2000000"
        android:maxLines="1"
        android:textSize="33sp"
        android:layout_below="@id/textDescription"
        android:id="@+id/text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/no_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tidak ada data"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:srcCompat="@mipmap/arrow_up_percentage"
                android:id="@+id/arrow_icon"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:textColor="#ff5722"
                android:textSize="16sp"
                android:text="100%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/percentage"
                android:layout_marginLeft="3dp" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>