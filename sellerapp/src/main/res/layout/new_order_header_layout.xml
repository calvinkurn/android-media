<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_header_container"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textStyle="bold"
        android:textSize="@dimen/card_header_title"
        android:textColor="#a1a1a1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/new_order_message"
        android:layout_toRightOf="@+id/new_order_message"
        android:layout_toEndOf="@+id/new_order_message"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_marginBottom="@dimen/padding_vs"
        android:layout_width="@dimen/card_header_img_width"
        android:layout_height="@dimen/card_header_img_height"
        android:src="@drawable/order_icon_40_x_40_px"
        android:id="@+id/new_order_message"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp" />

    <TextView
        android:id="@+id/new_order_see_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/card_header_see_detail"
        android:textColor="#fe5722"
        android:text="LIHAT DETAIL"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" />

    <View
        android:layout_below="@id/new_order_message"
        android:layout_marginBottom="@dimen/padding_vs"
        android:id="@+id/line_break"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLineSellerHome" />
</RelativeLayout>