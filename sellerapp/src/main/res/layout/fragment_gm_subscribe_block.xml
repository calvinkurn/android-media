<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_toped_broken"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/status_no_result"/>

    <TextView
        android:id="@+id/textview_block_gm_subscribe_title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/imageview_toped_broken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/block_gm_subscribe_title"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textview_block_gm_subscribe_desc"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_below="@id/textview_block_gm_subscribe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/block_gm_subscribe_desc"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/button_block_gm_subscribe"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textview_block_gm_subscribe_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_gm_subscribe"/>

</RelativeLayout>