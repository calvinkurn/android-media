<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_layout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Tanggal Mulai"
        android:textSize="14sp"
        android:textColor="#61000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:id="@+id/custom_header" />

    <TextView
        android:text="26 Jul 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_header"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16sp"
        android:layout_alignLeft="@+id/custom_header"
        android:layout_alignStart="@+id/custom_header"
        android:textSize="16sp"
        android:textColor="#42b549"
        android:id="@+id/custom_date" />

    <View
        android:id="@+id/custom_break_point"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#1F000000"
        android:layout_below="@+id/custom_date"/>

    <ImageView
        android:layout_width="6dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/ic_rec_down_set_date"
        android:id="@+id/custom_drop_down"
        android:layout_above="@+id/custom_break_point"
        android:layout_alignRight="@+id/custom_break_point"
        android:layout_alignEnd="@+id/custom_break_point"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>
