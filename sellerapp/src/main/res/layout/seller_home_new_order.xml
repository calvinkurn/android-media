<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <TextView
        android:id="@+id/new_order_remaining_days"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:background="@color/blue_link"
        android:text="1 Hari lagiÂ«"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        />

    <LinearLayout
        android:id="@+id/new_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@id/new_order_remaining_days"
        android:layout_toStartOf="@id/new_order_remaining_days"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/new_order_name"
            android:text="Fauzan Arif"
            android:textColor="@color/sellerHomeNumberColor"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:id="@+id/new_order_date"
            android:text="31 Agustus 2016"
            android:textColor="@color/sellerHomeNumberColor"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>



</RelativeLayout>