<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/announcement_ticker_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_yellow_border_yelow"
    android:padding="@dimen/padding_vs"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_vs">

    <TextView
        android:id="@+id/ticker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ticker_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
</LinearLayout>