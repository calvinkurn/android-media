<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/complain_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:padding="@dimen/padding_vs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginBottom="@dimen/padding_vs"
            android:id="@+id/seller_home_complain_header_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_header_container"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_toEndOf="@+id/message_complain"
                android:layout_toRightOf="@+id/message_complain"
                android:text="Komplain"
                android:textColor="#a1a1a1"
                android:textSize="@dimen/card_header_title"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/message_complain"
                android:layout_width="@dimen/card_header_img_width"
                android:layout_height="@dimen/card_header_img_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:src="@drawable/komplain_icon_40_x_40_px"/>

            <TextView
                android:id="@+id/complain_see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="LIHAT DETAIL"
                android:visibility="gone"
                android:textColor="#fe5722"
                android:textSize="@dimen/card_header_see_detail"/>
        </RelativeLayout>


        <View
            android:layout_marginBottom="@dimen/padding_vs"
            android:id="@+id/line_break"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineSellerHome" />

        <TextView
            android:id="@+id/seller_home_buyer_complain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textColor="@color/sellerHomeNumberColor"
            android:textSize="@dimen/card_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Komplain Pembeli"
            android:textColor="@color/sellerHomeNumberColor"
            android:textSize="@dimen/card_description_size"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>