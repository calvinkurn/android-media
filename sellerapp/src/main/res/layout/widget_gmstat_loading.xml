<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/gmstat_padding_item_left_right">

    <com.tokopedia.sellerapp.gmstat.library.LoaderTextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/gmstat_margin_bottom"
        android:text="Transaksi"
        android:textColor="#89000000"
        android:textSize="14dp"
        app:use_gradient="true"
        app:width_weight="0.5" />

    <com.tokopedia.sellerapp.gmstat.library.LoaderTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDescription"
        android:layout_marginBottom="@dimen/gmstat_margin_bottom_double"
        android:layout_marginTop="1dp"
        android:maxLines="1"
        android:text="0.614K"
        android:textColor="#B2000000"
        android:textSize="33sp"
        app:height_weight="0.8"
        app:use_gradient="true"
        app:width_weight="0.8" />

    <com.tokopedia.sellerapp.gmstat.library.LoaderTextView
        android:id="@+id/no_data_text"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text"
        android:gravity="right"
        android:text="test"
        android:visibility="visible"
        app:height_weight="0.8"
        app:use_gradient="true" />

</RelativeLayout>