<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/activity_seller_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/seller_home_linlay_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.tokopedia.design.ticker.TickerView
                    android:id="@+id/tickerview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin_top_ticker"
                    android:layout_marginLeft="@dimen/card_container_margin"
                    android:layout_marginRight="@dimen/card_container_margin"
                    app:tckv_indicator_on_color="@color/tkpd_main_green"
                    app:tckv_indicator_off_color="@color/grey"
                    android:visibility="gone"
                    />

                <android.support.v7.widget.CardView
                    android:id="@+id/container_seller_home_shop_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="14.5dp"
                    android:layout_marginLeft="14.5dp"
                    android:layout_marginRight="14.5dp"
                    android:layout_marginStart="14.5dp"
                    android:layout_marginTop="14.5dp"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="4dp">

                    <com.tokopedia.sellerapp.home.view.widget.ShopScoreWidget
                        android:id="@+id/widget_shop_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>

                <!--android:paddingTop="@dimen/home_cover_height"-->
                <!-- Transaction -->
                <!--<include-->
                <!--layout="@layout/include_home_card_transaction"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/card_container_margin"-->
                <!--android:layout_marginRight="@dimen/card_container_margin"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_container_margin"
                    android:layout_marginRight="@dimen/card_container_margin"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <!-- Discussion and Message -->
                    <RelativeLayout
                        android:id="@+id/seller_home_discussion_new_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:id="@+id/container_seller_home_transaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="4dp">

                            <com.tokopedia.sellerapp.home.view.TransactionView
                                android:id="@+id/seller_home_transaction_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </android.support.v7.widget.CardView>


                        <!-- discussion -->
                        <include
                            layout="@layout/include_home_card_discussion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/container_seller_home_transaction"
                            android:layout_marginBottom="7dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="@dimen/card_container_margin" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <!-- Order -->
                        <include
                            android:id="@+id/seller_home_container"
                            layout="@layout/include_home_card_order"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_container_margin"
                    android:layout_marginRight="@dimen/card_container_margin"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <!-- message -->
                        <include
                            layout="@layout/include_home_card_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <!-- complain -->
                        <include
                            layout="@layout/include_home_card_complain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- blank space for FAB -->
                <LinearLayout
                    android:id="@+id/seller_home_blank_space"
                    android:layout_width="match_parent"
                    android:layout_height="85.75dp"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <!-- Cover Header -->
        <include layout="@layout/include_home_cover_header" />

        <com.tokopedia.sellerapp.home.boommenu.SquareMenuButton
            android:id="@+id/seller_home_boom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            app:boom_button_color="@color/tkpd_green_header"
            app:boom_button_pressed_color="@color/tkpd_green_header"
            app:boom_inActionBar="false"/>

        <View
            android:id="@+id/hide_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="invisible" />
    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/drawer_layout" />

</android.support.v4.widget.DrawerLayout>