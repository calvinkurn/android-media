<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/activity_seller_home">

    <LinearLayout
        android:id="@+id/seller_home_new_order_static"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seller_home_new_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/card_text_size"
            android:textColor="@color/sellerHomeNumberColor"
            android:layout_marginRight="10dp"
            android:text="0"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_marginBottom="@dimen/padding_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sellerHomeNumberColor"
            android:text="Order Baru"
            android:textSize="@dimen/card_description_size"
            android:paddingLeft="10dp" />

        <View
            android:id="@+id/line_break"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLineSellerHome" />
    </LinearLayout>
</LinearLayout>