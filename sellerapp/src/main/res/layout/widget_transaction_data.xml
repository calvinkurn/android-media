<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_data_container_upper"
    android:background="@android:color/white"
    android:paddingTop="@dimen/gmstat_padding_item_top_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/data_transaction_header_loading"
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_icon_transaksi"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingTop="3dp"
            android:textColor="#B3000000"
            android:layout_height="wrap_content"
            android:text="Data Transaksi"/>

    </LinearLayout>

    <View
        android:layout_marginTop="6dp"
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/data_transaction_header_loading"
        android:background="#1E000000"/>

    <RelativeLayout
        android:id="@+id/rl_transaction_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator_1">

        <LinearLayout
            android:id="@+id/transaction_data_container_gold_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
            android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <RelativeLayout
                android:id="@+id/transaction_data_container_gold_merchant2"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/buyer_number_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Transaksi"
                    android:layout_marginBottom="5dp"
                    android:textColor="#89000000"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/transaction_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buyer_number_header"
                    android:text="0"
                    android:layout_marginBottom="20dp"
                    android:textColor="#B2000000"
                    android:textSize="24sp"/>

                <LinearLayout
                    android:id="@+id/transaction_data_percentage_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/transaction_count">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:paddingTop="3dp"
                        app:srcCompat="@mipmap/arrow_up_percentage"
                        android:layout_below="@+id/transaction_count"
                        android:id="@+id/transaction_count_icon" />

                    <TextView
                        android:text="20%"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="#42b549"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/transaction_count_icon"
                        android:layout_toRightOf="@+id/transaction_count_icon"
                        android:layout_toEndOf="@+id/transaction_count_icon"
                        android:id="@+id/percentage" />
                </LinearLayout>
            </RelativeLayout>
            <com.db.chart.view.LineChartView
                android:id="@+id/transaction_chart"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="101.3dp"
                />
            <!--<com.tokopedia.sellerapp.gmstat.views.NChart-->
            <!--android:id="@+id/transaction_chart"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="0.7"-->
            <!--android:layout_height="91.3dp" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transaction_data_container_non_gold_merchant"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#CD000000"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/ic_lock_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dapatkan akses untuk melihat\ndata lengkap statistik produk"
                    android:textSize="14sp"
                    android:textColor="#80ffffff"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/move_to_gmsubscribe"
                android:layout_width="244dp"
                android:layout_height="52dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/rounded_corner">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upgrade ke Gold Merchant"
                    android:textColor="#42b549"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <!--<com.tokopedia.sellerapp.gmstat.views.NChart-->
            <!--android:id="@+id/transaction_chart"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="0.7"-->
            <!--android:layout_height="91.3dp" />-->
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/separator_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gmstat_padding_item_left_right"
        android:layout_below="@id/rl_transaction_data"
        android:background="@android:color/transparent"/>




</RelativeLayout>