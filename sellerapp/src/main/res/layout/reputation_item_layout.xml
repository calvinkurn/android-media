<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">

        <com.tokopedia.sellerapp.home.view.ReputationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reputation_view"/>

        <com.tokopedia.sellerapp.home.view.ShopStatisticTransactionView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_statistic_transaction_view"
            android:layout_toRightOf="@id/reputation_view" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
