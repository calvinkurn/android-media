<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/bg_line_separator"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/label_layout_header"
        style="@style/LabelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/dashboard_icon_shop_height"
                android:layout_height="@dimen/dashboard_icon_shop_height"
                android:background="@drawable/bg_rect_gray_round">

                <ImageView
                    android:id="@+id/image_view_shop_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_placeholder_shop_with_padding"/>

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_rect_stroke_light_gray" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_shop_name"
                    style="@style/TextView.Title.Bold"
                    tools:text="Toko Kelontong Indonesia" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_power_merchant_logo"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        tools:src="@drawable/ic_power_merchant"
                        android:layout_marginRight="@dimen/dp_4"/>

                    <TextView
                        android:id="@+id/tv_shop_membership_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:fontFamily="sans-serif"
                        android:textColor="#b3000000"
                        android:lineSpacingExtra="6sp"
                        tools:text="Regular Merchant"
                        android:layout_marginRight="@dimen/dp_4"/>

                    <TextView
                        android:id="@+id/tv_shop_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#ae31353b"
                        android:lineSpacingExtra="8sp"
                        android:layout_marginLeft="@dimen/dp_4"
                        tools:text="Aktif" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dp_8"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:srcCompat="@drawable/icon_setting" />
        </LinearLayout>

        <com.tokopedia.sellerapp.dashboard.view.widget.ShopWarningTickerView
            android:id="@+id/shop_warning_ticker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.tokopedia.design.widget.WarningTickerView
            android:id="@+id/verification_warning_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <com.tokopedia.sellerapp.dashboard.view.widget.ShopScorePMWidget
            android:id="@+id/shop_score_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_height="40dp" />

        <FrameLayout
            android:id="@+id/ticker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/dp_8">

            <android.support.v7.widget.CardView
                android:id="@+id/pm_ticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_rectangle_yellow"
                app:cardBackgroundColor="@color/ticker_blue"
                app:cardPreventCornerOverlap="true"
                app:elevation="0dp"
                app:cardCornerRadius="@dimen/dp_8">

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/tv_ticker"
                    style="@style/TextView.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:lineSpacingExtra="@dimen/sp_6"
                    android:padding="@dimen/dp_8"
                    tools:text="@string/pm_label_price_cashback" />

                <ImageView
                    android:id="@+id/iv_ticker_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_ticker_announcement_cropped" />

            </android.support.v7.widget.CardView>
        </FrameLayout>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/button_activate"
            style="@style/Button.Submit.Green.Full"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/upgrade_power_merchant"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/dp_8"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashboard_widget_height"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/LabelLayout"
            android:id="@+id/reputation_label_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                style="@style/TextView.Small.Bold.BlackSecondary"
                android:text="@string/shop_reputation" />

            <com.tokopedia.design.reputation.ShopReputationView
                android:id="@+id/shop_reputation_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"/>

            <TextView
                android:id="@+id/text_view_reputation_point"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/label_empty_value"
                tools:text="50.000 poin"/>
        </LinearLayout>

        <include layout="@layout/partial_separator_vertical" />

        <LinearLayout
            style="@style/LabelLayout"
            android:id="@+id/transaction_label_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                style="@style/TextView.Small.Bold.BlackSecondary"
                android:text="@string/transaction_success" />

            <TextView
                android:id="@+id/text_view_transaction_success"
                style="@style/TextView.Headline"
                android:text="@string/label_empty_value"
                tools:text="80%"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>