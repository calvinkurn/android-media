<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/line_separator"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LabelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_view_shop_icon"
            android:layout_width="@dimen/dashboard_icon_shop_height"
            android:layout_height="@dimen/dashboard_icon_shop_height"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_placeholder_shop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_shop_name"
                style="@style/TextView.Subheading.Bold"
                android:text="@string/label_empty_value" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_view_gm_icon"
                    android:layout_width="@dimen/image_width_xxs"
                    android:layout_height="@dimen/image_width_xxs"
                    android:src="@drawable/ic_goldmerchant_drawer"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_view_gm_status"
                    style="@style/TextView.Body1"
                    android:text="@string/label_empty_value" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:layout_width="@dimen/image_width_s"
            android:layout_height="@dimen/image_width_s"
            android:layout_marginBottom="@dimen/margin_ms"
            android:src="@drawable/icon_setting" />
    </LinearLayout>

    <include layout="@layout/partial_separator_horizontal" />

    <com.tokopedia.sellerapp.home.view.widget.ShopScoreWidget
        android:id="@+id/shop_score_widget"
        style="@style/LabelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/partial_separator_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/LabelLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.Body1.Bold"
                android:text="@string/your_shop_reputation" />

            <com.tokopedia.design.reputation.ShopReputationView
                android:id="@+id/shop_reputation_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_view_reputation_point"
                style="@style/TextView.Caption.BlackDisabled"
                android:text="@string/label_empty_value" />
        </LinearLayout>

        <include layout="@layout/partial_separator_vertical" />

        <LinearLayout
            style="@style/LabelLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.Body1.Bold"
                android:text="@string/gm_statistic_title_transaction_success" />

            <TextView
                android:id="@+id/text_view_transaction_success"
                style="@style/TextView.Display1"
                android:text="@string/label_empty_value" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>