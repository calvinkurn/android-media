<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/gmstat_padding_item_left_right"
    android:paddingTop="@dimen/gmstat_padding_item_top_transaction"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/buyer_data_header"
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_icon_pembeli"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingTop="3dp"
            android:textColor="#B3000000"
            android:text="Data Pembeli"/>
    </LinearLayout>

    <View
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/buyer_data_header"
        android:background="#1E000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_marginTop="8dp"
        android:layout_below="@id/separator_1"
        android:orientation="horizontal"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/buyer_number_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Pembeli"
                android:layout_marginBottom="5dp"
                android:textColor="#89000000"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/buyer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999,9jt"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/buyer_number_header"
                android:textColor="#B2000000"
                android:textSize="24sp"/>
            <LinearLayout
                android:id="@+id/buyer_data_percentage_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/buyer_count">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="5dp"
                    android:layout_marginRight="2dp"
                    app:srcCompat="@drawable/ic_rectangle_up"
                    android:layout_gravity="center_vertical"
                    android:layout_below="@+id/buyer_count"
                    android:id="@+id/buyer_count_icon" />

                <TextView
                    android:text="20%"
                    android:textSize="12sp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#42b549"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/buyer_count_icon"
                    android:layout_toRightOf="@+id/buyer_count_icon"
                    android:layout_toEndOf="@+id/buyer_count_icon"
                    android:id="@+id/percentage_buyer" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/data_buyer_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/buyer_data_pie_chart"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                app:donut_max="100"
                app:donut_finished_color="#ff5722"
                app:donut_finished_stroke_width="4dp"
                android:backgroundTint="#ff5722"
                android:backgroundTintMode="add"
                app:donut_show_text="false"
                app:donut_unfinished_color="#cecece"
                app:donut_unfinished_stroke_width="4dp" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/buyer_data_pie_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/data_buyer_container_inner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/female_pie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff5722"
                    android:textSize="24sp"
                    android:text="0 %" />
                <TextView
                    android:id="@+id/header_pie_buyer_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wanita"
                    android:textColor="#ff5722"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/male_pie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#a1a1a1"
                    android:textSize="12sp"
                    android:text="20% Pria"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>