<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokopedia.sellerapp">

    <application
        android:name=".SellerMainApplication"
        android:allowBackup="true"
        android:icon="@drawable/qc_launcher2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tokopedia3.Launcher"
        tools:replace="android:icon">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>

                <!-- LOCALYTICS TEST MESSAGE KEY -->
                <data android:scheme="@string/key_localytics_testmessage" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gmsubscribe.GMSubscribeActivity"
            android:label="Berlangganan Gold Merchant"
            android:screenOrientation="portrait" />
        <activity
            android:name=".home.view.SellerHomeActivity"
            android:exported="true"
            android:label="Home"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tkpd" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="d02324f74e70ffcd2dc00ab722d32baecf1884b4" />
        <meta-data
            android:name="LOCALYTICS_APP_KEY"
            android:value="@string/key_localytics" />
        <meta-data
            android:name="GTM_RESOURCE"
            android:resource="@raw/gtm_seller" />
        <meta-data
            android:name="GTM_ID"
            android:value="@string/key_gtm" />
        <meta-data
            android:name="APPSFLYER_KEY"
            android:value="@string/key_appsflyer" />

        <meta-data
            android:name="com.truecaller.android.sdk.PartnerKey"
            android:value="OQcSB25ec2f92263c41b5a3d10152ace7888e" />

        <activity android:name=".onboarding.activity.OnboardingSellerActivity" />
        <activity
            android:name="com.tokopedia.sellerapp.gmstat.activities.GMStatActivity"
            android:label="@string/title_activity_gmstat"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3"></activity>
        <activity android:name=".truecaller.TruecallerActivity"/>

        <provider
            android:authorities="com.facebook.app.FacebookContentProvider411083689235522"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true"/>

        <service
            android:name=".fcm.FCMMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>