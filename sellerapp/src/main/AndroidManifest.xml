<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokopedia.sellerapp">

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:node="remove"
        tools:selector="com.google.firebase"/>

    <uses-permission
        android:name="android.permission.WRITE_CALL_LOG"
        tools:node="remove"/>
    <uses-permission
        android:name="android.permission.READ_CALL_LOG"
        tools:node="remove"/>

    <uses-sdk tools:overrideLibrary="com.tokopedia.core"/>

    <application
        android:name=".SellerMainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_sellerapp_ramadhan"
        android:roundIcon="@mipmap/ic_sellerapp_launcher_ramadhan_round"
        android:label="@string/app_name"
        android:hasCode="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tokopedia3"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        tools:replace="android:icon,android:label,android:hasCode,android:roundIcon,android:allowBackup">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3.Sellerapp.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <activity
            android:name=".FallbackActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3.PlainGreen">
        </activity>

        <activity
            android:name="com.tokopedia.sellerhome.view.activity.SellerHomeActivity"
            android:exported="true"
            android:label="@string/drawer_title_home"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/SellerHomeTheme">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tkpd" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_sellerapp"
                    android:path="@string/path_sellerhome"/>
            </intent-filter>
            <meta-data
                android:name="APPS_HOME"
                android:value="true" />
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name="com.tokopedia.shop.open.view.activity.ShopOpenMandatoryActivity"/>

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true"/>
        <meta-data
            android:name="GTM_ID"
            android:value="@string/gtm_id_sa" />
        <meta-data
            android:name="GA_ID"
            android:value="@string/ga_id_sa" />
        <meta-data
            android:name="APPSFLYER_KEY"
            android:value="@string/appsflyer_key_sa" />
        <meta-data
            android:name="APP_ID"
            android:value="@string/moengage_key_sa"
            tools:replace="android:value" />
        <meta-data
            android:name="com.bugsnag.android.API_KEY"
            android:value="50d42520ce58b3168a5a721995812a72"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_goe_api_key_sa" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_id_sa" />
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/actions" />
        <meta-data
            android:name="HANSEL_APP_ID"
            android:value="@string/hansel_app_id_sa"
            tools:replace="android:value" />
        <meta-data
            android:name="HANSEL_APP_KEY"
            android:value="@string/hansel_app_key_sa"
            tools:replace="android:value" />
        <meta-data
            tools:replace="android:value"
            android:name="io.branch.sdk.BranchKey"
            android:value="@string/branch_sdk_key_sa" />
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <activity
            android:name=".deeplink.DeepLinkActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_deep_link_topseller"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="/topads"
                    android:scheme="https" />
                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="/topads/*"
                    android:scheme="https" />
                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="/peluang"
                    android:scheme="https" />
                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="/peluang.pl"
                    android:scheme="https" />
                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="/invoice.pl"
                    android:scheme="https" />

                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="/topads"
                    android:scheme="http" />
                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="/topads/*"
                    android:scheme="http" />
                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="/peluang"
                    android:scheme="http" />
                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="/peluang.pl"
                    android:scheme="http" />
                <data
                    android:host="*.tokopedia.com"
                    android:pathPattern="invoice.pl"
                    android:scheme="http" />

                <data
                    android:host="tokopedia.com"
                    android:pathPattern="/topads"
                    android:scheme="https" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="/topads/*"
                    android:scheme="https" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="/peluang"
                    android:scheme="https" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="/peluang.pl"
                    android:scheme="https" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="/invoice.pl"
                    android:scheme="https" />

                <data
                    android:host="tokopedia.com"
                    android:pathPattern="/topads"
                    android:scheme="http" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="/topads/*"
                    android:scheme="http" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="/peluang"
                    android:scheme="http" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="/peluang.pl"
                    android:scheme="http" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="invoice.pl"
                    android:scheme="http" />

            </intent-filter>
        </activity>

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider411083689235522"
            android:exported="true" />

        <activity
            android:name="com.tokopedia.saldodetails.view.activity.SaldoDepositActivity"
            android:label="@string/saldo_detail_title_activity_people_deposit"
            android:theme="@style/Theme.White"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tokopedia.saldodetails.view.activity.SaldoWebViewActivity"
            android:label="@string/saldo_detail_title_activity_people_deposit"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White.PopupTransparent"/>

        <activity
            android:name="com.tokopedia.saldodetails.view.activity.SaldoIntroActivity"
            android:screenOrientation="portrait"
            android:label="@string/saldo_detail_title_header_saldo_intro"
            android:theme="@style/Theme.White.PopupTransparent"
            tools:replace="android:label"
            android:launchMode="singleTask"/>

        <activity
            android:name=".onboarding.SellerOnboardingBridgeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".deeplink.DeepLinkHandlerActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="sellerapp" />
            </intent-filter>
        </activity>
        <service android:name="com.tokopedia.sellerhomedrawer.domain.service.SellerDrawerGetNotificationService"
            android:permission="android.permission.BIND_JOB_SERVICE"/>

         <receiver android:name=".receiver.SellerAppMediaButtonReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.tokopedia.sellerapp.provider"
            android:grantUriPermissions="true"
            android:exported="false"
            tools:replace="android:authorities">
            <meta-data
                tools:replace="android:resource"
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

    </application>
</manifest>
