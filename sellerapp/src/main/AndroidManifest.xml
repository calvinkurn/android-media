<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokopedia.sellerapp">

    <application
        android:name=".SellerMainApplication"
        android:allowBackup="true"
        android:icon="@drawable/qc_launcher2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:replace="android:icon"
        android:theme="@style/Theme.Tokopedia3.Launcher">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>

                <!-- LOCALYTICS TEST MESSAGE KEY -->
                <data android:scheme="@string/key_localytics_testmessage" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gmsubscribe.GMSubscribeActivity"
            android:label="Berlangganan Gold Merchant"
            android:screenOrientation="portrait" />
        <activity
            android:name=".home.view.SellerHomeActivity"
            android:exported="true"
            android:label="Home"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tkpd" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="LOCALYTICS_APP_KEY"
            android:value="@string/key_localytics" />
        <meta-data
            android:name="GTM_RESOURCE"
            android:resource="@raw/gtm_seller" />
        <meta-data
            android:name="GTM_ID"
            android:value="@string/key_gtm" />
        <meta-data
            android:name="APPSFLYER_KEY"
            android:value="@string/key_appsflyer" />

        <activity android:name=".onboarding.activity.OnboardingSellerActivity"></activity>
    </application>

</manifest>