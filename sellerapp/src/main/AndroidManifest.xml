<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokopedia.sellerapp">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:node="remove"
        tools:selector="com.google.firebase"/>

    <application
        android:name=".SellerMainApplication"
        android:allowBackup="true"
        android:icon="@drawable/qc_launcher2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tokopedia3"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:replace="android:icon">

        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name=".dashboard.view.activity.DashboardActivity"
            android:exported="true"
            android:label="@string/drawer_title_home"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tkpd" />
            </intent-filter>
            <meta-data
                android:name="APPS_HOME"
                android:value="true" />
        </activity>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="d02324f74e70ffcd2dc00ab722d32baecf1884b4" />
        <meta-data
            android:name="GTM_RESOURCE"
            android:resource="@raw/gtm_seller" />
        <meta-data
            android:name="GTM_ID"
            android:value="@string/key_gtm" />
        <meta-data
            android:name="GA_ID"
            android:value="@string/key_ga" />
        <meta-data
            android:name="APPSFLYER_KEY"
            android:value="@string/key_appsflyer" />
        <meta-data
            android:name="APP_ID"
            android:value="@string/key_moengage" />

        <meta-data
            android:name="com.truecaller.android.sdk.PartnerKey"
            android:value="@string/key_truecaller_seller_app" />

        <activity android:name=".onboarding.activity.OnboardingSellerActivity" />

        <activity
            android:name=".truecaller.TruecallerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".deeplink.DeepLinkActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_deep_link"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="m.tokopedia.com"
                    android:pathPattern="/topads"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern="topads"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPattern="/topads/*"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern="topads/*"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern="/topads/manage"
                    android:scheme="http" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern="/topads/manage"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPattern="/topads/manage"
                    android:scheme="http" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPattern="/topads/manage"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPattern="/peluang"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern="peluang"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPattern="/peluang.pl"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern="peluang.pl"
                    android:scheme="https" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="peluang"
                    android:scheme="http" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="peluang.pl"
                    android:scheme="http" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="peluang"
                    android:scheme="https" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern="peluang.pl"
                    android:scheme="https" />
            </intent-filter>
        </activity>


        <service
            android:name="com.tokopedia.seller.transaction.neworder.view.presenter.GetOrderService"
            android:exported="false" />

        <service
            android:name="com.tokopedia.seller.transaction.neworder.view.appwidget.ListOrderViewServiceWidget"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name="com.tokopedia.seller.transaction.neworder.view.appwidget.NewOrderWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_order_widget_info" />
        </receiver>

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider411083689235522"
            android:exported="true" />

        <activity
            android:name=".deeplink.DeepLinkHandlerActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="sellerapp" />
            </intent-filter>
        </activity>
    </application>
</manifest>