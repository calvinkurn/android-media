<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:id="@+id/test_text" android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" android:visibility="gone"/>


    <!-- Login progress -->

    <LinearLayout
        android:id="@+id/register_next_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/register_next_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/title_register_process"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <!-- Login form -->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/register_next_step_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_med"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_med"
                android:text="@string/title_personal_id"
                android:textSize="@dimen/fontl"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_next_full_name"
                style="@style/CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_med"
                android:background="@drawable/new_edittext_white"
                android:ems="10"
                android:hint="@string/title_full_name"
                android:inputType="textPersonName"
                android:padding="@dimen/padding_vs"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <EditText
                android:id="@+id/register_next_phone_number"
                style="@style/CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_med"
                android:background="@drawable/new_edittext_white"
                android:ems="10"
                android:hint="@string/prompt_phone"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="@dimen/padding_vs"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustomFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="@string/title_gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/register_next_male"
                    style="@style/CustomFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="@string/radio_male"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts" />

                <RadioButton
                    android:id="@+id/register_next_female"
                    style="@style/CustomFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/radio_female"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustomFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:text="@string/title_birthday"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/register_next_date"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:text="1/1/2004"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <TextView
                android:id="@+id/register_finish_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@drawable/button_buy_from_cart"
                android:gravity="center"
                android:text="@string/title_register_wo_u"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutUse"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_med"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center"
                    android:layout_weight=".50"
                    android:background="#EEEEEE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:id="@+id/register_next_detail_t_and_p"
                    android:text="@string/title_or_use"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center"
                    android:layout_weight=".50"
                    android:background="#EEEEEE" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
