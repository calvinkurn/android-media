<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="@dimen/padding_vs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_hotprod"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_product_desc"
            android:gravity="center"
            android:src="@drawable/ic_loading_toped" />

        <!-- android:layout_marginRight="@dimen/margin_vs" android:padding="@dimen/margin_vvs" -->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_vs">

        <LinearLayout
            android:id="@id/grosir_preorder_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@id/grosir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedge_wholesale"
                android:padding="@dimen/padding_vs"
                android:layout_marginRight="@dimen/padding_vs"
                android:text="Grosir"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xsmall"
                android:visibility="visible" />

            <TextView
                android:id="@id/preorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedge_preorder"
                android:padding="@dimen/padding_vs"
                android:text="Preorder"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/text_size_xsmall"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grosir_preorder_1"
            android:ellipsize="end"
            android:gravity="left"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Product Name"
            android:textColor="@color/href_link"
            android:textSize="@dimen/fontvs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:gravity="left"
            android:text="Product Price"
            android:textColor="@color/tkpd_prod_price"
            android:textSize="@dimen/fontvs" />

        <View
            android:id="@id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/product_price"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:background="#c5c5c5" />

        <LinearLayout
            android:id="@id/shop_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_dp"
            android:layout_below="@id/divider_1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Shop"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <LinearLayout
                android:id="@+id/badges_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/total_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_info"
            android:layout_marginRight="@dimen/margin_vs"
            android:gravity="left"
            android:text="Total Seller"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fontvs"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/wishlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/delete_but"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:src="@drawable/ic_action_delete" />

        <TextView
            android:id="@+id/buy_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="0.8"
            android:background="@drawable/btn_buy"
            android:gravity="center"
            android:text="@string/title_buy"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>