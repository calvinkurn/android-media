<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/cards_ui_2"
    android:orientation="horizontal"
    android:padding="@dimen/margin_small" >

    <ImageView
        android:id="@+id/payment_icon"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:layout_gravity="top"
        android:layout_marginRight="@dimen/margin_med" />

    <TextView
        android:id="@+id/payment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text="asdasd asdasd"
        android:autoLink="web"
        android:textSize="@dimen/fonts" />

</LinearLayout>