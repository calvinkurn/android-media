<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEditAddress">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
     <!-- Jenis alamat dan nama penerima -->

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:orientation="vertical"
        android:layout_margin="5pt"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginTop="10pt"
        android:layout_marginBottom="10pt"
        android:background="@drawable/cards_ui_2"
        >
            <TextView 
             android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:textSize="16sp"
			 android:textColor="#000000"
			 android:gravity="center_vertical"
			 android:layout_marginTop="5dp"
			 android:layout_marginLeft="10dp"
			 android:textStyle="italic"
			 android:text="@string/title_save_address_as"
            />
            
            <EditText 
			android:id="@+id/address_type"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="5pt"
	        android:inputType="text"
	        android:layout_height="wrap_content"
            />
            
            <View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#B7B7B7"
			/>
            
            <TextView 
             android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:textSize="16sp"
			 android:textColor="#000000"
			 android:gravity="center_vertical"
			 android:layout_marginTop="5dp"
			 android:layout_marginLeft="10dp"
			 android:textStyle="italic"
			 android:text="@string/title_receiver_name"
            />
            
            <EditText 
			android:id="@+id/receiver_name"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="5pt"
	        android:inputType="text"
	        android:layout_height="wrap_content"
            />
            
        </LinearLayout>
        
    <!-- End of Jenis alamat dan nama penerima -->
    
    <!-- Alamat -->
    
    <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"        
      android:background="@drawable/cards_ui_2"
      android:orientation="vertical"
      android:layout_margin="5pt"
      android:layout_marginLeft="5pt"
      android:layout_marginRight="5pt"
      android:layout_marginTop="10pt"
      android:layout_marginBottom="10pt"
    >        
    
         <TextView 
             android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:textSize="16sp"
			 android:textColor="#000000"
			 android:gravity="center_vertical"
			 android:layout_marginTop="5dp"
			 android:layout_marginLeft="10dp"
			 android:textStyle="italic"
			 android:text="@string/title_address_add_address"
            />
            
            <EditText 
			android:id="@+id/address"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="5pt"
	        android:inputType="text"
	        android:layout_height="wrap_content"
            />
        
    </LinearLayout>
    
    <!-- End of alamat -->
   
    <!-- Detail alamat -->

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5pt"
	    android:layout_marginBottom="10pt"
	    android:layout_marginLeft="5pt"
	    android:layout_marginRight="5pt"
	    android:layout_marginTop="10pt"
	    android:background="@drawable/cards_ui_2"
	    android:orientation="vertical" >
	    
			<TextView 
             android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:textSize="16sp"
			 android:textColor="#000000"
			 android:gravity="center_vertical"
			 android:layout_marginTop="5dp"
			 android:layout_marginLeft="10dp"
			 android:textStyle="italic"
			 android:text="@string/title_province"
            />
            
			<Spinner
			android:id="@+id/provinsi"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="5pt"
	        android:inputType="text"
	        android:layout_height="wrap_content"
	        />
			
			<TextView 
			android:id="@+id/province_error"
			android:visibility="invisible"
			android:textColor="#ff0000"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
			android:text="@string/error_province"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>

            <TextView 
             android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:textSize="16sp"
			 android:textColor="#000000"
			 android:gravity="center_vertical"
			 android:layout_marginTop="5dp"
			 android:layout_marginLeft="10dp"
			 android:textStyle="italic"
			 android:text="@string/title_regency"
            />
            
            <Spinner
			android:id="@+id/regency"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="5pt"
	        android:inputType="text"
	        android:layout_height="wrap_content"
	        />
			
			<TextView 
			android:id="@+id/regency_error"
			android:visibility="invisible"
			android:textColor="#ff0000"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
			android:text="@string/error_regency"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>
			
            <TextView 
             android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:textSize="16sp"
			 android:textColor="#000000"
			 android:gravity="center_vertical"
			 android:layout_marginTop="5dp"
			 android:layout_marginLeft="10dp"
			 android:textStyle="italic"
			 android:text="@string/title_sub_district"
            />
            
            <Spinner
			android:id="@+id/sub_district"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="5pt"
	        android:inputType="text"
	        android:layout_height="wrap_content"
	        />
	    
            <TextView 
			android:id="@+id/sub_district_error"
			android:visibility="invisible"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
			android:textColor="#ff0000"
			android:text="@string/error_sub_district"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>
	</LinearLayout>
    <!-- End of detail alamat -->
    
    <!-- No HP dan kodepos -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:background="@drawable/cards_ui_2"
        android:orientation="vertical"
        android:layout_margin="5pt"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginTop="10pt"
        android:layout_marginBottom="10pt"
        >
            <TextView 
             android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:textSize="16sp"
			 android:textColor="#000000"
			 android:gravity="center_vertical"
			 android:layout_marginTop="5dp"
			 android:layout_marginLeft="10dp"
			 android:textStyle="italic"
			 android:text="@string/title_post_code"
            />
            
            <EditText 
			android:id="@+id/post_code"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginBottom="5pt"
	        android:inputType="number"
	        android:layout_height="wrap_content"
            />
            
            <View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#B7B7B7"
			/>
            
            <TextView 
             android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:textSize="16sp"
			 android:textColor="#000000"
			 android:gravity="center_vertical"
			 android:layout_marginTop="5dp"
			 android:layout_marginLeft="10dp"
			 android:textStyle="italic"
			 android:text="@string/title_receiver_phone_no"
            />
            
            <EditText 
			android:id="@+id/receiver_phone"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:inputType="number"
	        android:layout_height="wrap_content"
            />
            
        </LinearLayout>
        
    <!-- End of kodepos no hp -->
    
    <TextView
        android:id="@+id/btn_save"
		android:layout_width="match_parent"
		android:layout_height="70dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="20dp"
		android:layout_marginTop="10dp"
		android:background="#00ff00"
		android:text="@string/title_save"
		android:gravity="center"
    />

</LinearLayout>
</ScrollView>