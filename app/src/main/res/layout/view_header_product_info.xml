<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="@dimen/margin_vs"
        android:text="Product Name"
        android:textColor="#333333"
        android:textSize="@dimen/fontm"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:id="@id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 0,00,-"
            android:textColor="@color/tkpd_prod_price"
            android:textSize="@dimen/fonts"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/cashback_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/label_cashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:background="@drawable/label_dark_green"
                android:textSize="@dimen/fontvs"/>

        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/margin_vs"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_marginStart="@dimen/margin_small"
                android:text="@string/title_viewed"
                android:textColor="@color/time_color"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@id/tv_viewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_marginEnd="@dimen/margin_vs"
                android:text="0"
                android:textColor="#333333"
                android:textSize="@dimen/fonts"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="end"
                android:layout_marginEnd="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="@string/title_terjual"
                android:textColor="@color/time_color"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@id/tv_brought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_marginEnd="@dimen/margin_vs"
                android:text="0"
                android:textColor="#333333"
                android:textSize="@dimen/fonts"
                tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>