<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_vs">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_yellow_border_yelow"
        android:padding="@dimen/padding_vs"
        android:layout_margin="@dimen/margin_vs"
        android:singleLine="true"
        android:textSize="@dimen/fontvs" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="@dimen/message_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/date"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/right_bubble"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:textIsSelectable="true"
            android:textSize="@dimen/fonts" />

    </RelativeLayout>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/main"
        android:layout_below="@id/main"
        android:singleLine="true"
        android:textColor="@color/time_color"
        android:textSize="@dimen/fontvs" />
</RelativeLayout>