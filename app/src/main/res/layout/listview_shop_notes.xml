<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cards_ui_2"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small"
    android:layout_marginBottom="@dimen/margin_small">

    <ImageView
        android:id="@+id/edit_notes"
        android:layout_width="@dimen/large_dp"
        android:layout_height="@dimen/large_dp"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:background="@drawable/overflow_selected"
        android:padding="@dimen/padding_vs"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:src="@drawable/ic_action_edit" />

    <ImageView
        android:id="@+id/delete_notes"
        android:layout_width="@dimen/large_dp"
        android:layout_height="@dimen/large_dp"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_toLeftOf="@id/edit_notes"
        android:layout_toStartOf="@id/edit_notes"
        android:background="@drawable/overflow_selected"
        android:padding="@dimen/padding_vs"
        tools:src="@drawable/remove" />

    <TextView
        android:id="@+id/notes_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/delete_notes"
        android:layout_toStartOf="@id/delete_notes"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_vs"
        android:textSize="@dimen/fonts" />

</RelativeLayout>