<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tokopedia.tkpd.BuyCreditCart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/screen_per_3_pad"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/title_shopping_cart"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/screen_per_3_pad"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/title_confirmation"
                android:textColor="@color/time_color"
                android:textSize="@dimen/fontvs" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/cart_state"
                android:layout_width="@dimen/margin_med"
                android:layout_height="@dimen/margin_med"
                android:src="@drawable/ic_shopping_cart_done" />


            <TextView
                android:layout_width="@dimen/screen_per_3_pad"
                android:layout_height="0.1dp"
                android:layout_gravity="center"
                android:background="@color/time_color"
                android:gravity="center" />

            <ImageView
                android:id="@+id/confirm_state"
                android:layout_width="@dimen/margin_med"
                android:layout_height="@dimen/margin_med"
                android:src="@drawable/ic_shopping_cart_undone" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            tools:ignore="MergeRootFrame" />

    </LinearLayout>

</ScrollView>