<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_vs"
    android:background="@color/tkpd_bg_color_grery"
    >

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cards_ui"
        >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_m"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <View
                android:id="@+id/notification"
                android:layout_width="@dimen/img_thumb_s"
                android:layout_height="@dimen/img_thumb_s"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/green_notification_circle" />

            <LinearLayout
                android:id="@+id/view_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_toLeftOf="@+id/layout_right"
                android:layout_toRightOf="@+id/avatar"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/title_buyer"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:layout_toRightOf="@id/user_ava"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/reputation_holder_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rep_icon"
                            android:layout_width="@dimen/img_thumb_s"
                            android:layout_height="@dimen/img_thumb_s"
                            android:src="@drawable/ic_icon_repsis_smile_active" />

                        <TextView
                            android:id="@+id/rep_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_vs"
                            android:gravity="center_vertical"
                            android:text="100%"
                            android:textSize="@dimen/fontvs" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reputation_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Transaksi"
                        android:id="@+id/date"
                        android:textSize="@dimen/fontvs"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/time_color"
                        android:layout_marginTop="@dimen/margin_vs" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/view_header_text"
                android:paddingBottom="@dimen/padding_vs"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/deadline_icon"
                    android:layout_width="@dimen/img_thumb_s"
                    android:layout_height="@dimen/img_thumb_s"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:src="@drawable/ic_countdown" />

                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hari"
                    android:textColor="@color/red_500"
                    android:textSize="@dimen/fontvs" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view_summary_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/recap_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_vs"
                android:background="@drawable/border_green_reputation"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_small"
                android:text="Beri Penilaian &amp; Beri 1 Ulasan"
                android:textColor="@color/tkpd_dark_green"
                android:textSize="@dimen/fontvs" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>