                            <!-- android:entries="@array/return_policy" -->
                        </Spinner>

                        <LinearLayout
                            android:id="@+id/add_product_policy_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_weight="0.5">

                            <TextView
                                android:id="@+id/add_product_shop_policy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:singleLine="true"
                                android:text="@string/title_return_policy_condition"
                                android:textColor="@color/green_500"
                                android:textStyle="bold"
                                android:textSize="@dimen/new_text_size_input"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_product_prompt_condition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_condition"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/new_text_size_small"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/add_product_prompt_insurance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_insurance"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/new_text_size_small"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/add_product_condition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/add_product_insurance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_product_errorCondition"
                        android:layout_width="@dimen/half_screen_2pad"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#ff0000" />

                    <TextView
                        android:id="@+id/add_product_errorInsurance"
                        android:layout_width="@dimen/half_screen_2pad"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="#ff0000" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
