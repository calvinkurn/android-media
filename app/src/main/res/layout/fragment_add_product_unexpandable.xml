                    </android.support.design.widget.TextInputLayout>
                </com.tkpd.library.ui.expandablelayout.ExpandableRelativeLayout>
            </LinearLayout>

            <!-- [START] ini terima pengembalian, asuransi dan kondisi -->
            <LinearLayout
                android:id="@+id/add_product_pengembalian_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_product_etalase_dll_layout"
