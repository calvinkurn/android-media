<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_product_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:padding="@dimen/new_margin_small">


        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->

        <!-- Ini untuk nama produk dan kategory -->

        <LinearLayout
            android:id="@+id/add_product_nama_produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/new_margin_small"
            >

            <ViewStub
                android:id="@+id/add_product_copy"
                android:inflatedId="@+id/add_product_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/add_product_copy"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/add_product_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/new_margin_med"
                android:layout_below="@+id/add_product_copy"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/new_margin_med">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_product_name_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="false"
                    android:layout_marginBottom="@dimen/new_margin_small">
                    <EditText
                        android:id="@+id/add_product_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_product_name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/new_text_size_input" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_category"
                    android:textSize="@dimen/new_text_size_small"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/add_product_category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    />

                <View
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="@dimen/new_margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:id="@+id/add_product_catalog_layout_expanded"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/new_margin_small"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/add_product_prompt_catalog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_catalog"
                        android:textColor="@color/label_color"
                        android:layout_marginLeft="3dp"
                        android:textSize="@dimen/new_text_size_small" />

                    <com.tokopedia.tkpd.myproduct.adapter.ClickToSelectWithImage
                        android:id="@+id/add_product_catalog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@id/add_product_prompt_catalog"
                        android:textSize="@dimen/new_text_size_input"
                        android:visibility="invisible"
                        />


                    <TextView
                        android:layout_below="@id/add_product_prompt_catalog"
                        android:id="@+id/add_product_catalog_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/no_catalog_selected"
                        android:background="@color/trans_black_20"
                        />


                </RelativeLayout>

                <!-- [START] ini akhir dari product description -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_product_desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:errorEnabled="false">
                    <EditText
                        android:id="@+id/add_product_desc_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_desc"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:gravity="top"
                        android:scrollbars="vertical"
                        android:textSize="@dimen/new_text_size_input"
                        />
                    <!--android:textSize="@dimen/fonts"-->
                </android.support.design.widget.TextInputLayout>
                <!-- [END] ini akhir dari product description -->

            </LinearLayout>
        </LinearLayout>






        <include
            android:id="@+id/include_preorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/product_preorder_unexpandable"
            android:layout_below="@+id/add_product_nama_produk"
            android:layout_marginBottom="@dimen/new_margin_small"/>




        <!-- ini untuk harga, berat dan order minimal-->
        <LinearLayout
            android:id="@+id/add_product_harga_berat_kategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/new_margin_small"
            android:background="@drawable/cards_ui_2"
            android:layout_below="@+id/include_preorder"
            android:orientation="vertical"
            android:padding="@dimen/new_margin_med" >

            <!-- Ini untuk Harga-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.5">

                    <com.tkpd.library.ui.widget.ClickToSelectEditText
                        android:id="@+id/add_product_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/new_text_size_input"
                        />
                </android.support.design.widget.TextInputLayout>

                <!--<fr.ganfra.materialspinner.MaterialSpinner-->
                <!--android:id="@+id/add_product_currency2"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:ms_enableErrorLabel="false"-->
                <!--app:ms_multiline="false"-->
                <!--app:ms_hint="Mata Uang"-->
                <!--app:ms_thickness="0dp"/>-->

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_price_alert"
                    android:layout_width="0dp"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">
                    <!--
                    app:errorEnabled="false"
                    android:paddingTop="10dp"-->
                    <EditText
                        android:id="@+id/add_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/prompt_price"
                        android:textSize="@dimen/new_text_size_input"
                        />
                    <!--
                     android:ems="10"
                    android:textSize="@dimen/fonts" -->
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <!-- Ini untuk Berat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">



                <!--<fr.ganfra.materialspinner.MaterialSpinner-->
                <!--android:id="@+id/add_product_weight_unit"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--app:ms_multiline="false"-->
                <!--app:ms_enableErrorLabel="false"-->
                <!--app:ms_hint="Unit Berat"-->
                <!--app:ms_thickness="0dp"-->
                <!--/>-->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <com.tkpd.library.ui.widget.ClickToSelectEditText
                        android:id="@+id/add_product_weight_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/new_text_size_input"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_weight_alert"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/add_product_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_weight"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/new_text_size_input"
                        />
                    <!--
                    app:errorEnabled="false"
