                    android:maxLines="1"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textSize="@dimen/new_text_size_input"
                    />
                <!--android:textSize="@dimen/fonts"-->
            </android.support.design.widget.TextInputLayout>
