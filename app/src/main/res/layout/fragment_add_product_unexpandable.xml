                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_white_background"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/prompt_wholesale"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/new_text_size_title" />

                <ImageView
                    android:id="@+id/add_product_imagechveron"
                    android:layout_width="@dimen/med_dp"
                    android:layout_height="@dimen/med_dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_down" />

            </RelativeLayout>

            <!-- ini ditampilkan ketika verifikasi harga normal sudah -->
            <RelativeLayout
                android:id="@+id/add_product_wholesale_layout_unexpandable"
                android:layout_width="match_parent"
                android:layout_height="201.33dp">
                <!--android:layout_below="@+id/add_product_tittle_wholesale"-->
                <!--android:background="@drawable/cards_ui_2"-->

                <LinearLayout
                    android:id="@+id/add_product_wholesale_row_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/new_margin_med">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/min_product"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/new_text_size_small"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.3"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/max_product"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/new_text_size_small"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.3"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/price_per_product"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/new_text_size_small"
                        android:layout_weight="0.4"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/add_product_wholesale_item"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/add_product_wholesale_row_name" />


                <TextView
                    android:id="@+id/add_product_add_whole_sale_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_product_wholesale_item"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/btn_shop"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:text="@string/add_wholesale_price" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
