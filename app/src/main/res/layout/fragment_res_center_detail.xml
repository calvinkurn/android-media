<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rescenter.detail.activity.ResCenterActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.tkpd.rescenter.detail.customview.ReplyEditorView
            android:id="@+id/custom_view_reply_editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/layout_rescenter_reply_editor" />

        <com.tokopedia.tkpd.rescenter.detail.customview.DetailView
            android:id="@+id/custom_view_detail_rescenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/custom_view_reply_editor"
            tools:layout="@layout/layout_rescenter_webview" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>