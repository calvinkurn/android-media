<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/main_retry"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/padding_small">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/margin_vs"
        android:gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/message_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:text="Terjadi kesalahan koneksi"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sub_message_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:text="Terjadi kesalahan koneksi"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Coba lagi"
        android:textColor="@color/tkpd_main_green"
        android:textStyle="bold"/>

</LinearLayout>
