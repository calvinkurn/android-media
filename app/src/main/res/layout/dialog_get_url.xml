<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/cards_ui"
    android:minHeight="300dp"
    android:focusable="true">

    <com.tkpd.library.ui.view.CustomSearchView
        android:id="@+id/search2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_find_own_product"/>

    <LinearLayout
        android:id="@+id/view_no_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/padding_small"
        android:orientation="vertical"
        android:layout_below="@+id/search2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_vs"
            android:src="@drawable/status_no_result" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:paddingRight="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:id="@+id/text_no_result"
            android:textColor="@color/black"
            android:text="Anda belum memiliki toko"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/open_shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/tkpd_light_green"
            android:text="@string/title_open_shop"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_below="@id/search2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        />

</RelativeLayout>