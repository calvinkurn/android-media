<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cards_ui_2"
    tools:context="com.tokopedia.tkpd.session.RegisterNewViewFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:id="@+id/test_text" android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" android:visibility="gone"/>


    <!-- Login progress -->

    <LinearLayout
        android:id="@+id/register_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/register_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/title_register_process"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <!-- Login form -->

    <ScrollView
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/step_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_med"
                android:text="@string/title_register"
                android:textSize="@dimen/fontl"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/register_name"
                style="@style/CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_med"
                android:background="@drawable/new_edittext_white"
                android:ems="10"
                android:hint="@string/title_email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding_vs"
                android:textColor="@color/black"
                android:imeOptions="actionNext"
                android:textSize="@dimen/font_small" />

            <com.tokopedia.tkpd.session.PasswordView
                android:id="@+id/register_password"
                style="@style/CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/new_edittext_white"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/padding_vs"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts"
                android:imeActionId="@+id/register_button"
                android:imeActionLabel="Lanjut"
                android:imeOptions="actionUnspecified"/>

            <RelativeLayout
                android:id="@+id/register_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="gone">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/label_color"
                    android:id="@+id/checkbox_privacy_policy"
                    android:checked="false"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/checkbox_privacy_policy"
                    android:id="@+id/text_detail_term_privacy"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/font_medium"
                    android:text="@string/show_password"
                    android:textColor="@color/black"
                    android:paddingRight="5dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:id="@+id/register_next">
                <TextView
                    android:id="@+id/register_next_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/button_buy_from_cart"
                    android:gravity="center"
                    android:text="@string/title_next"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontvs"
                    android:textStyle="bold" />

                <ProgressBar
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/register_next_progress"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center"
                    android:layout_weight=".50"
                    android:background="#EEEEEE" />

                <TextView
                    android:id="@+id/atau_gunakan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="atau"
                    android:textStyle="bold"
                    android:textColor="#AA000000"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.1dp"
                    android:layout_gravity="center"
                    android:layout_weight=".50"
                    android:background="#EEEEEE" />
            </LinearLayout>

