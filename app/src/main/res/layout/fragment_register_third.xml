<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/padding_med" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_med"
                android:text="@string/title_personal_id"
                android:textSize="@dimen/fontl"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/user_name"
                style="@style/CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_med"
                android:background="@drawable/new_edittext_white"
                android:ems="10"
                android:hint="@string/title_name"
                android:padding="@dimen/padding_vs"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <LinearLayout
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_med">

                <TextView
                    style="@style/CustomFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_small"
                    android:text="@string/title_birthday"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:imeOptions="actionNext"
                    android:fontFamily="sans-serif-light"
                    android:text="31/12/2143"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <com.tokopedia.tkpd.session.PasswordView
                android:id="@+id/password"
                style="@style/CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_med"
                android:background="@drawable/new_edittext_white"
                android:ems="10"
                android:hint="@string/title_password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:padding="@dimen/padding_vs"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <com.tokopedia.tkpd.session.PasswordView
                android:id="@+id/password_retype"
                style="@style/CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_med"
                android:background="@drawable/new_edittext_white"
                android:ems="10"
                android:hint="@string/title_new_password_confirmation"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingRight="@dimen/padding_vs"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <EditText
                android:id="@+id/phone_number"
                style="@style/CustomFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_med"
                android:background="@drawable/new_edittext_white"
                android:ems="10"
                android:hint="@string/title_phone"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:padding="@dimen/padding_vs"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vs"
                android:background="@color/tkpd_bg_color_grery"
                android:padding="@dimen/padding_small" >

                <TextView
                    android:id="@+id/tos_tos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Syarat dan Ketentuan"
                    android:textColor="@color/href_link" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@+id/tos_tos"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/tos_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator"
                    android:text="Kebijakan Privasi "
                    android:textColor="@color/href_link" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/tos_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saya sudah membaca dan menyetujui"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts" />
            </LinearLayout>

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@color/error_area"
                android:padding="@dimen/padding_small"
                android:text="Untuk dapat menggunakan layanan Tokopedia, anda harus menyetujui Syarat dan Ketentuan dari Tokopedia"
                android:visibility="gone" />

            <TextView
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@drawable/button_buy_from_cart"
                android:gravity="center"
                android:text="@string/title_register_wo_u"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>