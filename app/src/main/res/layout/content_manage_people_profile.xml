<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/fragment_manage_people_profile">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <com.tokopedia.tkpd.manage.people.profile.customview.AvatarView
            android:id="@+id/layout_manage_people_profile_avatar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.tokopedia.tkpd.manage.people.profile.customview.DetailView
            android:id="@+id/layout_manage_people_profile_detail_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.tokopedia.tkpd.manage.people.profile.customview.ContactView
            android:id="@+id/layout_manage_people_profile_contact_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_save"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>