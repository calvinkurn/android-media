<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <Spinner
        android:id="@+id/spinner_add_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <requestFocus />
    </Spinner>

    <TextView
        android:id="@+id/errorAddto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_addto"
        android:textColor="#ff0000" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/errorEtalase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_etalase"
        android:textColor="#ff0000" />

    <EditText
        android:id="@+id/etalase_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_etalase_name"
        android:visibility="gone" />

</LinearLayout>