<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="@dimen/checked_indicator_msg"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_vs"
        android:paddingBottom="@dimen/padding_vs"
        android:textSize="@dimen/fonts" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_label"
        android:padding="@dimen/padding_vs"
        android:paddingBottom="@dimen/padding_vs"
        android:textSize="@dimen/fonts" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#80868686" />

</RelativeLayout>