<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cards_ui_2"
        android:padding="@dimen/padding_small">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/img_thumb_m"
            android:layout_height="@dimen/img_thumb_m"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_image_avatar_boy" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toEndOf="@id/avatar"
            android:layout_toRightOf="@id/avatar"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/title_buyer"
            android:textColor="@color/tkpd_dark_green"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rep_icon"
            android:layout_width="@dimen/img_thumb_s"
            android:layout_height="@dimen/img_thumb_s"
            android:layout_below="@id/username"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_vs"
            android:layout_toEndOf="@id/avatar"
            android:layout_toRightOf="@id/avatar"
            android:src="@drawable/ic_icon_repsis_smile_active" />

        <TextView
            android:id="@+id/rep_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:layout_toEndOf="@id/rep_icon"
            android:layout_toRightOf="@id/rep_icon"
            android:gravity="center_vertical"
            android:text="40%"
            android:textSize="@dimen/fontvs" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/listview_inbox_detail_reputation_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/reply_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_vs"
        android:visibility="visible">

        <EditText
            android:id="@+id/reply_box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/reply_review"
            android:nestedScrollingEnabled="true" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:padding="@dimen/padding_vs"
            android:src="@drawable/ic_action_send" />
    </LinearLayout>


</RelativeLayout>

