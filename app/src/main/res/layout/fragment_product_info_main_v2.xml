<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <include
        android:id="@+id/include_loading"
        layout="@layout/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_buy"
        android:background="@android:color/background_light">

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.tokopedia.tkpd.product.customview.ErrorShopView
                android:id="@id/view_error_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small" />

            <com.tokopedia.tkpd.product.customview.ErrorProductView
                android:id="@id/view_error_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small" />

            <com.tokopedia.tkpd.product.customview.HeaderInfoView
                android:id="@id/view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.tokopedia.tkpd.product.customview.PictureView
                android:id="@id/view_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_vs"
                android:paddingTop="@dimen/margin_vs" />

            <com.tokopedia.tkpd.product.customview.ManageView
                android:id="@id/view_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" />

            <com.tokopedia.tkpd.product.customview.RatingView
                android:id="@id/view_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                />

            <com.tokopedia.tkpd.product.customview.TalkReviewView
                android:id="@id/view_talk_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small" />

            <com.tokopedia.tkpd.product.customview.ButtonShareView
                android:id="@id/view_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tokopedia.tkpd.product.customview.TransactionSuccessView
                android:id="@id/view_transaction_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small" />

            <com.tokopedia.tkpd.product.customview.FreeReturnView
                android:id="@+id/view_free_return"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tokopedia.tkpd.product.customview.DetailInfoView
                android:id="@id/view_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tokopedia.tkpd.product.customview.DescriptionView
                android:id="@id/view_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tokopedia.tkpd.product.customview.WholesaleView
                android:id="@id/view_wholesale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tokopedia.tkpd.product.customview.LastUpdateView
                android:id="@id/view_last_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tokopedia.tkpd.product.customview.ShopInfoView
                android:id="@id/view_shop_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tokopedia.tkpd.product.customview.NewShopView
                android:id="@id/view_new_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <com.tokopedia.tkpd.product.customview.ButtonBuyView
        android:id="@id/view_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible" />

    <ProgressBar
        android:id="@id/view_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</RelativeLayout>
