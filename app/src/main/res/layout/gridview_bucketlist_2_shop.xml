<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/shop_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="2.5dp"
        android:paddingLeft="@dimen/padding_small"
        android:paddingRight="@dimen/padding_vs"
        android:paddingTop="@dimen/padding_small"
        android:visibility="invisible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <com.tokopedia.tkpd.customwidget.SquareImageView
                android:id="@+id/shop_image_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/shop_gold_1"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:src="@drawable/ic_shop_gold"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/shop_lucky_1"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:layout_alignRight="@id/shop_image_1"
                android:layout_below="@id/shop_gold_1"
                android:padding="@dimen/margin_vvs"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_vs" >

            <TextView
                android:id="@+id/shop_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/href_link"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shop_count_bought_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/shop_count_fav_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".50"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="2.5dp"
        android:paddingLeft="@dimen/padding_vs"
        android:paddingRight="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        android:visibility="invisible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <com.tokopedia.tkpd.customwidget.SquareImageView
                android:id="@+id/shop_image_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/shop_gold_2"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:layout_alignRight="@id/shop_image_2"
                android:src="@drawable/ic_shop_gold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/shop_lucky_2"
                android:layout_width="@dimen/large_dp"
                android:layout_height="@dimen/large_dp"
                android:layout_alignRight="@id/shop_image_2"
                android:layout_below="@id/shop_gold_2"
                android:padding="@dimen/margin_vvs"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_vs" >

            <TextView
                android:id="@+id/shop_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/href_link"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shop_count_bought_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/shop_count_fav_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout> <!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
