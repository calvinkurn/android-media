<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_small"
    tools:context="com.tokopedia.tkpd.DetailTrackingActivity">

    <ProgressBar
        android:id="@+id/loadingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/view_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_yellow_border_yelow"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/tracking_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_status"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_header_tracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_status"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/cards_ui_2_selected"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/view_label_reference_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_reference_number"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:id="@+id/ref_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="INV/XXX/12334124"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_receiver_non_jne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_receive_name"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:id="@+id/receiver_name_non_jne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/title_receive_name"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/view_receiver_jne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/title_date_sent"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="27-Jan-2015"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/title_service_code"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:id="@+id/tracking_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="XXX"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/view_footer_tracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_header_tracking"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tkpd_address_card"
            android:padding="@dimen/padding_small">

            <RelativeLayout
                android:id="@+id/view_detail_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin_small">

                <TextView
                    android:id="@+id/label_sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/title_shop_info"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/label_receiver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/title_buyer"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <LinearLayout
                    android:id="@+id/layout_sender_receiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_receiver_name"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sender_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:singleLine="true"
                        android:text="Penjual"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/receiver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="Pembeli"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/label_sender_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/layout_sender_receiver"
                    android:text="@string/title_sender_city"
                    android:textColor="@color/label_color" />

                <TextView
                    android:id="@+id/label_receiver_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/layout_sender_receiver"
                    android:text="@string/title_receiver_city"
                    android:textColor="@color/label_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_sender_city"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sender_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:singleLine="true"
                        android:text="Medium Text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/receiver_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="Medium Text"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <ListView
                android:id="@+id/tracking_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_detail_shipping"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/margin_vs"
                android:visibility="visible"></ListView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
