<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome.WelcomeActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/background"/>

    <LinearLayout
        android:id="@id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:weightSum="10"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_ms"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/atau_gunakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Masuk dengan"
                android:textStyle="bold"
                android:textColor="@color/grey_600"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@id/atau_gunakan"
                android:background="@color/grey_600"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/atau_gunakan"
                android:background="@color/grey_600"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/container_provider"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            tools:background="@color/accent"
            android:orientation="horizontal">

        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_marginBottom="8dp"
            tools:visibility="gone"
            android:id="@+id/progress_login"
            android:layout_gravity="center" />

        <com.tokopedia.core.customView.LoginTextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            app:customText="Masuk"
            app:textColor="@color/grey_600"
            app:borderColor="@color/grey_600"
            app:cornerSize="5"
            app:borderSize="2"
            app:iconButton="@drawable/ic_login_icon"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Belum punya akun? Daftar"
            android:gravity="center"
            android:textColor="@color/grey_600" />


    </LinearLayout>

    <include
        android:visibility="gone"
        android:id="@+id/splash"
        layout="@layout/activity_splash_screen"/>

</RelativeLayout>
