<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DESKRIPSI GAMBAR"
        android:id="@+id/add_prod_img_desc_header"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/add_prod_img_desc_deskripsi"
        android:layout_below="@+id/add_prod_img_desc_header"
        android:layout_alignLeft="@+id/add_prod_img_desc_header"
        android:layout_alignStart="@+id/add_prod_img_desc_header"
        android:textColor="@color/black"
        android:singleLine="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_prod_img_desc_deskripsi"
        android:layout_alignRight="@+id/add_prod_img_desc_deskripsi"
        android:layout_alignEnd="@+id/add_prod_img_desc_deskripsi">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BATAL"
            android:id="@+id/add_prod_img_desc_cancel"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/add_prod_img_desc_ok"/>
    </LinearLayout>
</RelativeLayout>