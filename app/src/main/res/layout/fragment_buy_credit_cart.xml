        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:paddingBottom="@dimen/padding_small"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small" >

                <TextView
                    android:id="@+id/error_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_vs"
                    android:background="#FFADAD"
                    android:padding="@dimen/padding_vs"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/payment_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/error_payment"
                    android:paddingBottom="@dimen/padding_small" >

                    <LinearLayout
                        android:id="@+id/payment_total_sum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_marginTop="@dimen/margin_small" >

                        <TextView
                            android:id="@+id/string_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Pembayaran"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/string_saldo"
                            android:gravity="right"
                            android:text="Rp 200.000,-"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/use_saldo_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/payment_wrapper"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/rp_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_currency_rp"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fonts"
                            android:textStyle="bold"
                            />

                        <EditText
                            android:id="@+id/et_tkpd_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/rp_currency"
                            android:hint="@string/title_use_tokopedia_balance"
                            android:inputType="number"
                            android:textSize="@dimen/fonts"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/saldo_left_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/payment_total_sum" >

                        <TextView
                            android:id="@+id/string_tot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et_tkpd_balance"
                            android:layout_marginRight="@dimen/margin_small"
                            android:text="Saldo Tokopedia Anda saat ini"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs" />

                        <TextView
                            android:id="@+id/tokopedia_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/string_tot"
                            android:gravity="right"
                            android:text="Rp 2.000.213,-"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payment_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/saldo_left_wrapper"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_med"
                        android:background="@drawable/cards_ui_selected"
                        android:gravity="center"
                        android:padding="@dimen/padding_small" >

                        <TextView
                            android:id="@+id/spinner_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:drawablePadding="@dimen/padding_small"
                            android:gravity="center"
                            android:text="Pilih metode pembayaran dulu"
                            android:textColor="@color/href_link"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/small_dp"
                            android:layout_height="@dimen/small_dp"
                            android:layout_marginLeft="@dimen/margin_vs"
                            android:layout_toRightOf="@+id/spinner_payment"
                            android:background="@drawable/overflow_selected"
                            android:contentDescription="@string/image_product_desc"
                            android:src="@drawable/chevron_down" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/checkout_but"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_below="@id/use_saldo_wrapper"
                        android:background="@drawable/btn_buy"
                        android:gravity="center"
                        android:text="@string/tittle_checkout"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

            </LinearLayout>