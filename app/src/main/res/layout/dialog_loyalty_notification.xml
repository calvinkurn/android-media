<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_small">

    <LinearLayout
        android:id="@+id/back_lucky"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_500"
        android:paddingLeft="@dimen/margin_med"
        android:paddingRight="@dimen/margin_med">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_xxxlarge"
            android:layout_marginTop="@dimen/margin_med"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Selamat!"/>

        <TextView
            android:id="@+id/msg_lucky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_xlarge"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_med"
            android:textColor="@color/white"
            android:text="Anda berhasil menjadi lucky merchant"/>

    </LinearLayout>

    <TextView
        android:id="@+id/msg_detail_lucky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="@dimen/margin_med"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Kesempatan mendapatkan pesanan lebih banyak setiap harinya"/>

    <TextView
        android:id="@+id/msg_valid_lucky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Berlaku sampai 30 hari kedepan"/>

</LinearLayout>