<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cards_ui_selected"
    android:orientation="vertical">

    <TextView
        android:id="@+id/status"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/tkpd_dark_gray"
        android:gravity="center"
        android:padding="@dimen/padding_vs"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/fontvs"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/time_color"
        android:textSize="@dimen/fontvs" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/status"
        android:layout_toRightOf="@id/status"
        android:layout_toLeftOf="@id/create_time"
        android:layout_toStartOf="@id/create_time"
        android:gravity="center_vertical">

        <TextView
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:ellipsize="end"
            android:textSize="@dimen/font_medium"
            tools:text="ASDASADSASDASasdasdasadsasdDASDASD" />

    </RelativeLayout>

</RelativeLayout>