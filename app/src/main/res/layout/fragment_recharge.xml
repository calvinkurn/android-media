<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recharge_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ProgressBar
        android:id="@+id/recharge_progressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/telp_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:text="@string/prompt_phone"
        android:visibility="gone" />

    <com.tokopedia.tkpd.recharge.view.widget.RechargeEditText
        android:id="@+id/pulsa_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/nominalTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:text="@string/title_nominal"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spnNominal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:spinnerMode="dialog"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        >
    </Spinner>
    <TextView
        android:id="@+id/errorNominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:textSize="12sp"
        android:textColor="@color/red_600"
        android:text="@string/title_empty_stock"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/buy_wrapper_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:weightSum="1">
        <CheckBox
            android:id="@+id/buy_with_credit_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/instant_payment"
            android:layout_weight="0.60"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:visibility="invisible" />
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            android:minHeight="0dp"
            android:background="@drawable/btn_buy"
            android:text="@string/title_buy"
            android:layout_gravity="right"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>