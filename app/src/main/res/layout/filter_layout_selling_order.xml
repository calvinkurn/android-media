<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cards_ui_flat"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/read_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_filter_hide"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <SearchView
                android:layout_marginTop="@dimen/margin_vs"
                android:id="@+id/search"
                style="@style/SearchViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false" />

            <Spinner
                android:id="@+id/deadline_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/response_deadline" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="#AAAAAA" />
    </RelativeLayout>
</LinearLayout>