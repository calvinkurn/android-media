<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cards_ui_2"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/prod_image"
        android:layout_width="@dimen/img_thumb_m"
        android:layout_height="@dimen/img_thumb_m"
        android:src="@drawable/remove" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/prod_image"
        android:layout_marginLeft="@dimen/padding_small"
        >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/img_thumb"
            android:layout_marginTop="@dimen/margin_vs"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="User name"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <LinearLayout
            android:id="@+id/reputation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginBottom="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rep_icon"
                android:layout_width="@dimen/img_thumb_s"
                android:layout_height="@dimen/img_thumb_s"
                android:src="@drawable/ic_icon_repsis_smile_active" />

            <TextView
                android:id="@+id/rep_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_vs"
                android:gravity="center_vertical"
                android:text="140%"
                android:textSize="@dimen/fontvs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reputation_view"
            android:layout_marginTop="@dimen/margin_vs"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="@string/title_for"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_marginRight="@dimen/img_thumb"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Product Name"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs"
                android:textStyle="italic" />
        </LinearLayout>

        <ImageView
            android:id="@+id/but_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/overflow_selected"
            android:src="@drawable/ic_new_action_overflow_black" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_layout"
            android:lines="3"
            android:singleLine="true"
            android:text="Ini isi pesannya"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:text="11 November 1111"
                android:textColor="@color/time_color"
                android:textSize="@dimen/fontvs"
                android:layout_below="@id/message"
                android:layout_marginTop="@dimen/margin_vs"
                />

            <TextView
                android:id="@+id/total_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@color/label_color"
                android:textSize="@dimen/fontvs"
                android:layout_toLeftOf="@id/comment"
                android:textStyle="bold"
                android:layout_below="@id/message"
                android:layout_marginTop="@dimen/margin_vs"
                />

            <ImageView
                android:id="@+id/comment"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/img_thumb_s"
                android:layout_height="@dimen/img_thumb_s"
                android:layout_marginRight="@dimen/margin_vs"
                android:src="@drawable/ic_menu_talk"
                android:layout_below="@id/message"
                android:layout_marginTop="@dimen/margin_vs"
                />

    </RelativeLayout>


</RelativeLayout>