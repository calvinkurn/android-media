<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/tkpd_bg_color_grery"
    tools:context="com.tokopedia.core.fragment.FragmentSecurityQuestion" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/cards_ui_2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_med" >


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/view_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_small"
            android:layout_marginBottom="@dimen/margin_med"
            android:visibility="gone"
            android:background="@color/red_200">

            <TextView
                android:id="@+id/error_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/title_error_security"
                android:gravity="center" />

            <TextView
                android:id="@+id/error_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/msg_error_security" />

        </LinearLayout>


        <LinearLayout
        android:id="@+id/view_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_security_question"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_security_question"
            android:layout_marginBottom="@dimen/margin_small" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/wrapper_input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contoh : 08123456789">

        <EditText
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small" />
    </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:visibility="gone"
        android:orientation="vertical" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_otp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_otp"
            android:layout_marginBottom="@dimen/margin_small" />

        <TextView
            android:id="@+id/send_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_buy"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapper_input_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_otp">

            <EditText
                android:id="@+id/input_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_weight="0.5"
                android:enabled="false"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>




        <TextView
        android:id="@+id/save_but"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/button_buy_from_cart"
        android:gravity="center"
        android:text="@string/title_confirm"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/fontvs"
        android:layout_marginBottom="@dimen/margin_small"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/exit_but"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/btn_shop"
        android:gravity="center"
        android:text="@string/title_cancel"
        android:textAllCaps="true"
        android:textColor="@color/tkpd_dark_gray"
        android:textSize="@dimen/fontvs"
        android:textStyle="bold" />



</LinearLayout>
</ScrollView>