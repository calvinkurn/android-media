<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.tokopedia.tkpd.DeveloperOptions">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change Domain"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/base_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cards_ui"
            android:inputType="textUri" />

        <TextView
            android:id="@+id/submit_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="@string/title_ok"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Last Build"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small" />

        <TextView
            android:id="@+id/build_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/check_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Check Last Build"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/download_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Download Latest Build"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Last Stable Build"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/last_update_stable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small" />

        <TextView
            android:id="@+id/build_num_stable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/msg_stable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/check_but_stable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Check Last Stable Build"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/download_but_stable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Download Latest Stable Build"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/maintenance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Trigger Maintenance"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/custom_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Start Test Intent"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/reset_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Reset OnBoarding"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/test_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Test OnBoarding"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:text="NetworkHandler V4"
            android:textSize="14sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/toggle_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:text="Use HTTP" />

        <EditText
            android:id="@+id/proxy_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set proxy Address" />

        <EditText
            android:id="@+id/proxy_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set proxy Port"
            android:inputType="number" />

        <TextView
            android:id="@+id/save_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/btn_share"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="Use settings for V4 network"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15sp"
            android:text="WS V4"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_dev_ws4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15sp" />

        <TextView
            android:id="@+id/btn_save_dev_ws4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_share"
            android:paddingTop="15sp"
            android:text="SAVE"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_dev_ws4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <RadioButton
                android:id="@+id/rb_dev_ws4_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LIVE" />

            <RadioButton
                android:id="@+id/rb_dev_ws4_staging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STAGING" />

            <RadioButton
                android:id="@+id/rb_dev_ws4_alpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALPHA" />

            <TextView
                android:id="@+id/force_crash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/btn_share"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="Force Crash"
                android:textColor="@color/white" />

        </RadioGroup>
    </LinearLayout>
</ScrollView>