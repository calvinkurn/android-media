<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/add_product_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_below="@+id/add_product_share_layout"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/button_buy_from_cart"
        android:gravity="center"
        android:text="@string/title_save"
        android:textColor="@color/white"
        android:textSize="@dimen/fonts"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_product_submit_and_push"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_below="@+id/add_product_submit"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/button_buy_from_cart"
        android:gravity="center"
        android:text="@string/submit_but2"
        android:textColor="@color/white"
        android:textSize="@dimen/fonts"
        android:textStyle="bold" />
</LinearLayout>