<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/manage_prod"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_small">

    <TextView
        android:id="@id/tv_promote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_share"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/title_promo"
        android:textColor="@color/href_link_rev"
        android:textSize="@dimen/fontl"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_small">

        <TextView
            android:id="@id/tv_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_edit"
            android:textColor="@color/href_link"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />

        <TextView
            android:id="@id/tv_sold_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_sold_out"
            android:textColor="@color/href_link"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />

        <TextView
            android:id="@id/tv_to_etalase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:background="@drawable/btn_shop"
            android:gravity="center"
            android:padding="@dimen/padding_vs"
            android:text="@string/title_to_etalase"
            android:textColor="@color/href_link"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>