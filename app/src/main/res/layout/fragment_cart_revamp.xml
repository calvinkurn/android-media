<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small">

    <include
        layout="@layout/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:ignore="ObsoleteLayoutParam">

        <LinearLayout
            android:id="@+id/holder_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Shopping Cart -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/screen_per_3_pad"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/title_shopping_cart"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="@dimen/screen_per_3_pad"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/title_summary"
                        android:textColor="@color/time_color"
                        android:textSize="@dimen/fontvs" />

                    <TextView
                        android:layout_width="@dimen/screen_per_3_pad"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/title_confirmation"
                        android:textColor="@color/time_color"
                        android:textSize="@dimen/fontvs" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/margin_med"
                        android:layout_height="@dimen/margin_med"
                        android:src="@drawable/ic_shopping_cart_done" />

                    <TextView
                        android:layout_width="@dimen/screen_per_3_pad"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center"
                        android:background="@color/time_color"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="@dimen/margin_med"
                        android:layout_height="@dimen/margin_med"
                        android:src="@drawable/ic_shopping_cart_undone" />

                    <TextView
                        android:layout_width="@dimen/screen_per_3_pad"
                        android:layout_height="0.1dp"
                        android:layout_gravity="center"
                        android:background="@color/time_color"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="@dimen/margin_med"
                        android:layout_height="@dimen/margin_med"
                        android:src="@drawable/ic_shopping_cart_undone" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_payment_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                app:contentPadding="@dimen/padding_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_error_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFADAD"
                        android:padding="@dimen/padding_vs"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_vs"
                        android:layout_marginTop="@dimen/margin_small">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Pembayaran"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_total_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/string_saldo"
                            android:gravity="right"
                            android:text="Rp 200.000,-"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/holder_loyalty_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/margin_vs">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_small"
                            android:text="@string/title_loyalty_points"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs" />

                        <TextView
                            android:id="@+id/tv_loyalty_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/string_tot"
                            android:gravity="right|end"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs"
                            tools:text="Rp 2.000.213,-" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/payment_total_sum">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et_tkpd_balance"
                            android:layout_marginRight="@dimen/margin_small"
                            android:text="Saldo Tokopedia Anda saat ini"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs" />

                        <TextView
                            android:id="@+id/tv_deposit_tokopedia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fontvs"
                            tools:text="Rp 2.000.213,-" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/btn_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/saldo_left_wrapper"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_med"
                        android:background="@drawable/cards_ui_selected"
                        android:gravity="center"
                        android:padding="@dimen/padding_small">

                        <ImageView
                            android:id="@+id/iv_logo_btn_payment_method"
                            android:layout_width="55sp"
                            android:layout_height="28sp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_vs"
                            android:layout_toLeftOf="@+id/tv_desc_btn_payment_method"
                            android:visibility="visible"
                            tools:src="@drawable/android_check_default" />

                        <TextView
                            android:id="@+id/tv_desc_btn_payment_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:drawablePadding="@dimen/padding_small"
                            android:gravity="center"
                            android:text="Pilih metode pembayaran dulu"
                            android:textColor="@color/href_link"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/small_dp"
                            android:layout_height="@dimen/small_dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_vs"
                            android:layout_toRightOf="@+id/tv_desc_btn_payment_method"
                            android:background="@drawable/overflow_selected"
                            android:src="@drawable/chevron_down" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_info_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/payment_wrapper"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@color/green_200"
                        android:padding="@dimen/margin_vs"
                        android:text="Tidak dikenakan biaya"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/holder_use_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/payment_label"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_currency_rp"
                            android:textColor="@color/label_color"
                            android:textSize="@dimen/fonts"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/et_use_deposit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/title_use_tokopedia_balance"
                            android:inputType="number"
                            android:textSize="@dimen/fonts"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_checkout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_below="@id/payment_area"
                        android:background="@drawable/btn_buy"
                        android:gravity="center"
                        android:text="@string/tittle_checkout"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cb_use_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_below="@id/checkout_but"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/title_use_promo_code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/holder_use_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/btn_check_voucher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:background="@color/green_500"
                            android:gravity="center"
                            android:padding="@dimen/margin_small"
                            android:text="@string/title_check"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_et_voucher_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/btn_check_voucher"
                            android:layout_toStartOf="@id/btn_check_voucher">

                            <EditText
                                android:id="@+id/et_voucher_code"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/btn_height"
                                android:hint="Kode Voucher"
                                android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/tv_voucher_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/til_et_voucher_code"
                            tools:text="Total bolo bolo" />

                    </RelativeLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_cash_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                app:contentPadding="@dimen/padding_small">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Potensi Cashback"
                        android:textColor="@color/green_500"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_cash_back_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/green_500"
                        android:textStyle="bold"
                        tools:text="5000" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include
        layout="@layout/error_no_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>