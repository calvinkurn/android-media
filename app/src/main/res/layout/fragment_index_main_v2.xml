<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/include_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding_small"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <com.tokopedia.tkpd.customwidget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/index_main_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="vertical" />
        </com.tokopedia.tkpd.customwidget.SwipeToRefresh>

    </LinearLayout>

    <com.tkpd.library.ui.floatbutton.FabSpeedDial
        android:id="@+id/fab_speed_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:touchGuardDrawable="@drawable/background_blur"
        app:fabGravity="bottom_end"
        app:fabMenu="@menu/menu_add_product_instoped"
        app:fabBackgroundTint="@color/green_500"
        app:miniFabBackgroundTint="@color/mini_fab_title_background_tint"
        app:miniFabDrawableTint="@android:color/white"
        app:miniFabTitleTextColor="@android:color/white" />

