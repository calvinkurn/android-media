<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/light_green_300">
    <!--<item android:drawable="@android:color/white" />-->

    <!-- the normal bg color will be light grey -->
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#3e9d43"
                android:startColor="#3e9d43" />

            <corners android:radius="2dp" />

            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
        <!--<color android:color="@color/green_800" />-->
    </item>

    <!-- #FFDDDDDD -->

    <!-- make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
        </shape>
    </item>
</ripple>