<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#E2E2E2"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <item android:bottom="4px">
                <shape>
                    <solid android:color="@color/white"/>
                    <corners
                        android:radius="20dp"/>
                    <padding
                        android:left="10dp"
                        android:right="5dp"/>
                    <stroke
                        android:width="1px"
                        android:color="#E2E2E2" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#E2E2E2"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <item android:bottom="4px">
                <shape>
                    <solid android:color="#D6D6D6"/>
                    <corners
                        android:radius="20dp"/>
                    <padding
                        android:left="10dp"
                        android:right="5dp"/>
                    <stroke
                        android:width="1px"
                        android:color="#E2E2E2" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>