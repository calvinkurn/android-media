<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/image_width_s"
        android:layout_height="@dimen/image_width_s"
        android:layout_marginEnd="@dimen/margin_ms"
        android:layout_marginRight="@dimen/margin_ms"
        android:visibility="gone"
        tools:src="@drawable/ic_badge_silver" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            style="@style/TextView.Title"
            android:maxLines="1"
            android:minWidth="@dimen/lv_min_title_width"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_sub_title"
            style="@style/TextView.Micro.BlackDisabled"
            android:maxLines="1"
            android:visibility="gone"
            tools:text="@string/app_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_content"
        style="@style/TextView.Title.BlackSecondary"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginRight="@dimen/margin_ms"
        android:layout_weight="1"
        android:gravity="end"
        android:maxLines="1"
        android:scrollHorizontally="true" />
</LinearLayout>
