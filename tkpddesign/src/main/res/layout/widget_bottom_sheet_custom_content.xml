<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <TextView
        android:id="@+id/title_bottom_sheet"
        style="@style/TextView.Small.Bold"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/body_bottom_sheet"
        style="@style/TextView.Small.BlackDisabled"
        android:layout_marginTop="@dimen/dp_8"
        tools:text="@string/app_name" />

    <FrameLayout
        android:id="@+id/layout_custom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10" />

    <TextView
        android:id="@+id/button_opsi_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/rect_white_rounded_stroke_gray"
        android:gravity="center"
        android:textColor="@color/font_black_disabled_38"
        android:visibility="gone"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/button_close_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_button_green_enabled"
        android:gravity="center"
        android:text="@string/text_ticker_action_close"
        android:textColor="@color/font_white_primary_70" />

</LinearLayout>