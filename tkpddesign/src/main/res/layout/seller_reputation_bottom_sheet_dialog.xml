<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/dp_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_3"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/seller_reputation"
        android:textColor="@color/Unify_N700_68"
        android:textSize="@dimen/sp_16"
        android:textStyle="normal"
        />

    <TextView
        android:lineSpacingExtra="7sp"
        android:text="@string/seller_reputation_given_by_buyer"
        style="@style/TextView.Small.BlackDisabled"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/seller_reputation"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="@dimen/dp_10"
                      android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/reputation_point"
            android:lineSpacingExtra="7sp"
            style="@style/TextView.Small.BlackDisabled"
            tools:text="200 Poin"
            />
    </LinearLayout>

    <Button
        android:id="@+id/close_button"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/Unify_G400"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="7sp"
        android:text="@string/close"
        style="@style/TextView.Small.WhitePrimary"
        />
</LinearLayout>