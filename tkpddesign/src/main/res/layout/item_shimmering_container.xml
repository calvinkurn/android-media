<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify1"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/loaderUnify2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintWidth_percent="0.7" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify2"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/loaderUnify3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify1"
        app:layout_constraintWidth_percent="0.8"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify3"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintWidth_percent="0.4"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify2"/>
</androidx.constraintlayout.widget.ConstraintLayout>