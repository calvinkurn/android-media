<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_3"
        android:lineSpacingExtra="8sp"
        android:text="@string/buyer_reputation"
        style="@style/TextView.Title.Bold"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        />

    <TextView
        android:lineSpacingExtra="7sp"
        android:text="@string/buyer_reputation_given_by_seller"
        style="@style/TextView.Small.BlackDisabled"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smiley_good"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:maxHeight="@dimen/dp_24"
            android:maxWidth="@dimen/dp_24"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_smiley_good"/>

        <TextView
            android:id="@+id/score_good"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/smiley_good"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            tools:text="248"
            style="@style/TextView.Micro.BlackDisabled"
            />

        <ImageView
            android:id="@+id/smiley_neutral"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/score_good"
            android:maxHeight="@dimen/dp_24"
            android:maxWidth="@dimen/dp_24"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_smiley_neutral"/>

        <TextView
            android:id="@+id/score_netral"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/smiley_neutral"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            style="@style/TextView.Micro.BlackDisabled"
            tools:text="2"
            />

        <ImageView
            android:id="@+id/smiley_bad"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/score_netral"
            android:maxHeight="@dimen/dp_24"
            android:maxWidth="@dimen/dp_24"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_smiley_bad"/>

        <TextView
            android:id="@+id/score_bad"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/smiley_bad"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            style="@style/TextView.Micro.BlackDisabled"
            tools:text="0"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/close_button"
        style="@style/Button.Submit.Green"
        android:layout_width="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginBottom="@dimen/dp_16"
        android:lineSpacingExtra="7sp"
        android:text="@string/close"/>

</LinearLayout>