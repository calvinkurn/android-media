<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bottom_sheet_rounded_white"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tray_close"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_4"
            android:background="@drawable/close_button_bottom_sheet" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_rounded"
        android:background="@color/white"
        tools:background="@color/colorPrimaryDark"
        tools:layout_height="@dimen/dp_40" />
</android.support.constraint.ConstraintLayout>