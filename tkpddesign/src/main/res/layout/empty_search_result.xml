<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="@dimen/empty_search_result_padding_top"
    android:paddingLeft="@dimen/empty_search_result_padding_side"
    android:paddingRight="@dimen/empty_search_result_padding_side"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/empty_search_result_icon_height"
        android:src="@drawable/ic_empty_search"
        />

    <TextView
        android:id="@+id/empty_search_result_title"
        style="@style/TextView.Title.BlackSecondary.Bold"
        android:layout_marginTop="@dimen/empty_search_result_title_margin_top"
        android:gravity="center"
        tools:text="@string/empty_search_result_title_template"/>

    <TextView
        android:id="@+id/empty_search_result_content"
        style="@style/TextView.Small.BlackDisabled"
        android:layout_marginTop="@dimen/empty_search_result_content_margin_top"
        android:gravity="center"
        android:maxLines="4"
        tools:text="@string/empty_search_result_content_template"/>

</LinearLayout>