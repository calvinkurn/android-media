<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dp_32"
              android:orientation="vertical"
              android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/font_black_primary_70"
        android:textStyle="bold"
        tools:text="apakah anda yakin?"/>

    <TextView
        android:id="@+id/tv_desc_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_24"
        android:lineSpacingExtra="@dimen/sp_5"
        android:textColor="@color/font_black_secondary_54"
        android:textSize="@dimen/sp_14"
        tools:text="apakah anda yakin?"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textAllCaps="false"
            android:textColor="@color/font_black_secondary_54"
            android:textSize="@dimen/sp_14"
            tools:text="no"/>

        <Button
            android:id="@+id/btn_ok_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textAllCaps="false"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/sp_14"
            tools:text="yes"/>

    </LinearLayout>

</LinearLayout>