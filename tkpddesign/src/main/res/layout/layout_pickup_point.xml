<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_send_to_pick_up_booth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="@string/label_send_to_pick_up_booth"
        android:textColor="@color/tkpd_main_green"
        android:textSize="12sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_outline_pickup_point"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pick_up_booth_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="6sp"
                android:textSize="14sp"
                tools:text="Alfamart - Rawa Belong" />

            <ImageButton
                android:id="@+id/btn_cancel_pick_up"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_close_default" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pick_up_booth_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:lineSpacingExtra="4sp"
            android:textSize="12sp"
            tools:text="Jl. Rw. Belong, RT.2/RW.6, Sukabumi Utara, Kebayoran Baru, Kota Jakarta Barat, Daerahâ€¦" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_edit_pick_up_booth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_5"
            android:text="@string/label_edit_pickup"
            android:textSize="14sp"
            app:drawableLeftCompat="@drawable/ic_edit" />

    </LinearLayout>

</LinearLayout>