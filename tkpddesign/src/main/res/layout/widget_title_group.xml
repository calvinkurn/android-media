<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_small"
    android:paddingLeft="@dimen/margin_sm"
    android:paddingRight="@dimen/margin_sm"
    android:paddingTop="@dimen/margin_sm">

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="@dimen/image_width_xs"
        android:layout_height="@dimen/image_width_xs"
        android:layout_marginEnd="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        tools:src="@drawable/ic_search" />

    <TextView
        android:id="@+id/text_view_title"
        style="@style/TextView.Body1.BlackSecondary"
        tools:text="@string/app_name" />
</LinearLayout>