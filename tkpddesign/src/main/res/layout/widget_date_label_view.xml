<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_calendar_grey" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_ms"
        android:layout_marginRight="@dimen/margin_ms"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_date"
            style="@style/TextView.Title.Green"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_compared_date"
            style="@style/TextView.Micro.BlackDisabled"
            android:visibility="gone"
            tools:text="@string/app_name" />
    </LinearLayout>

</LinearLayout>