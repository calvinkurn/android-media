<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

    <android.support.v7.widget.CardView
        style="@style/CardViewWidget.Voucher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10">

            <CheckBox
                android:id="@+id/checkbox_voucher"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_44"
                android:buttonTint="@color/tkpd_main_green"
                android:gravity="center"
                android:textColor="@color/font_voucher"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute"/>

            <RelativeLayout
                android:id="@+id/holder_input_voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_checkedbox"
                android:layout_alignStart="@+id/text_checkedbox"
                android:layout_below="@+id/checkbox_voucher"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/button_voucher"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/bg_button_green_enabled"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="@string/use_voucher"
                    style="@style/TextView.Small.WhitePrimary.Bold"/>

                <EditText
                    android:id="@+id/edittext_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/button_voucher"
                    android:layout_toStartOf="@+id/button_voucher"
                    android:hint="@string/kode_voucher"/>

                <TextView
                    android:id="@+id/error_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edittext_voucher"
                    android:text="@string/error_voucher"
                    android:textColor="@color/font_error_voucher"
                    android:textSize="@dimen/dp_10"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/textdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/error_voucher"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/notes_voucher"
                    style="@style/TextView.Micro.BlackDisabled"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/holder_voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/holder_input_voucher"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                tools:visibility="visible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/separator_voucher"/>

                <TextView
                    android:id="@+id/button_cancel"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_button_white_stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="@string/button_cancel_voucher"
                    style="@style/TextView.Small.BlackDisabled"/>

                <TextView
                    android:id="@+id/textview_title_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/button_cancel"
                    android:layout_toStartOf="@+id/button_cancel"
                    android:text="@string/title_success_get_voucher"
                    android:textColor="@color/font_voucher"/>

                <TextView
                    android:id="@+id/textview_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textview_title_voucher"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/button_cancel"
                    android:layout_toStartOf="@+id/button_cancel"
                    android:textColor="@color/tkpd_main_green"
                    tools:text="Anda HEMAT"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_checkedbox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_toEndOf="@+id/checkbox_voucher"
                android:layout_toRightOf="@+id/checkbox_voucher"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/checkbox_use_promo_code"
                android:textColor="@color/font_voucher"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>