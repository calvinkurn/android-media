<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="20dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingBottom="10dp"
        android:textColor="#8a000000"
        android:textSize="14sp"
        tools:text="Hubungi"/>

    <LinearLayout
        android:id="@+id/btn_action_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_icon_action_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/ic_phone_black_36dp"/>

        <TextView
            android:id="@+id/tv_label_action_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#8a000000"
            android:textSize="16sp"
            tools:text="Call"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_action_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_icon_action_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/ic_textsms_action"/>

        <TextView
            android:id="@+id/tv_label_action_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#8a000000"
            android:textSize="16sp"
            tools:text="Message"/>

    </LinearLayout>
</LinearLayout>