<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/min_label"
            tools:text="pmin label"
            style="@style/TextView.Caption.BlackSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            />

        <TextView
            android:id="@+id/max_label"
            tools:text="pmax label"
            style="@style/TextView.Caption.BlackSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/min_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView.Subheading.BlackPrimary"
            tools:text="pmin"
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="@integer/max_length_price_input"
            android:nextFocusDown="@+id/max_value"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_range_separator_symbol"
            android:layout_marginStart="@dimen/price_range_separator_margin"
            android:layout_marginEnd="@dimen/price_range_separator_margin"/>

        <EditText
            android:id="@+id/max_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextView.Subheading.BlackPrimary"
            android:singleLine="true"
            tools:text="pmax"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="@integer/max_length_price_input"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">

        <com.tokopedia.design.price.PriceSeekbarDynamicBackground
            android:id="@+id/seekbar_background"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            app:foreColor="@color/medium_green"
            app:backColor="@color/grey_300"
            />

        <View
            android:id="@+id/min_button"
            android:layout_width="@dimen/price_seekbar_button_size"
            android:layout_height="@dimen/price_seekbar_button_size"
            android:background="@drawable/price_input_seekbar_button_neutral"
            android:layout_centerVertical="true"
            />

        <View
            android:id="@+id/max_button"
            android:layout_width="@dimen/price_seekbar_button_size"
            android:layout_height="@dimen/price_seekbar_button_size"
            android:background="@drawable/price_input_seekbar_button_neutral"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

</LinearLayout>