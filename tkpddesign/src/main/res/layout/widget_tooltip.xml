<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_tooltip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/tv_desc_tooltip"
                android:layout_below="@+id/tv_title_tooltip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="@dimen/dp_8"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_icon_tooltip"
            android:layout_width="@dimen/image_width_xl"
            android:layout_height="@dimen/image_width_xl"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"/>

    </LinearLayout>

    <com.tokopedia.design.button.Button
        android:id="@+id/btn_action_tooltip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:textAllCaps="false"
        app:type="primary"
        app:size="big"/>

</LinearLayout>