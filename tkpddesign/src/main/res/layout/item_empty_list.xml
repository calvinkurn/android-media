<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2" />
    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/ic_empty_state" />

    <TextView
        android:id="@+id/text_view_empty_title_text"
        style="@style/TextView.Title"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:maxWidth="@dimen/dp_250"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/text_view_empty_content_text"
        style="@style/TextView.Small.BlackSecondary"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:maxLines="4"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/text_view_empty_content_item_text"
        style="@style/TextView.Small.Green"
        android:layout_margin="@dimen/margin_med"
        android:visibility="gone"
        tools:text="@string/app_name" />

    <!-- text will be override programmatically -->
    <Button
        android:id="@+id/button_add_promo"
        style="@style/Button.Submit.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginRight="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_sm"
        android:maxWidth="@dimen/dp_250"
        android:minWidth="@dimen/dp_200"
        tools:text="@string/app_name" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
