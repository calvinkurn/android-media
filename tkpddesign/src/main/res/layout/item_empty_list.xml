<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_vs"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_empty_state"/>

    <TextView
        android:id="@+id/text_view_empty_title_text"
        style="@style/TextView.Body1"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        tools:text="@string/app_name"/>

    <TextView
        android:id="@+id/text_view_empty_content_text"
        style="@style/TextView.Body1.BlackSecondary"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:maxLines="4"
        tools:text="@string/app_name"/>

    <TextView
        android:id="@+id/text_view_empty_content_item_text"
        style="@style/TextView.Body1.Green"
        android:layout_margin="@dimen/margin_med"
        android:visibility="gone"
        tools:text="@string/app_name"/>

    <!-- text will be override programmatically -->
    <Button
        android:id="@+id/button_add_promo"
        style="@style/Button.Submit.Green"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        tools:text="@string/app_name"/>

</LinearLayout>
