<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:background="@drawable/bg_ticker"
    android:paddingTop="@dimen/padding_vvvs"
    android:paddingBottom="@dimen/padding_vvvs"
    android:paddingLeft="@dimen/padding_vvs"
    android:paddingRight="@dimen/margin_vvvs">

    <com.tkpd.library.ui.widget.TouchViewPager
        android:id="@+id/view_pager_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.tokopedia.design.viewpagerindicator.CirclePageIndicator
        android:id="@+id/page_indicator_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/padding_vs"
        />

    <ImageView
        android:id="@+id/imageview_ticker_action_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_marginEnd="@dimen/margin_vs"
        app:srcCompat="@drawable/ic_ticker_action_close_12dp"
        android:contentDescription="@string/text_ticker_action_close"
        />

</RelativeLayout>