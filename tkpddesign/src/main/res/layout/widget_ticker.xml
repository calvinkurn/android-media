<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ticker"
    android:paddingTop="@dimen/dp_1"
    android:paddingBottom="@dimen/dp_1"
    android:paddingLeft="@dimen/dp_3"
    android:paddingRight="@dimen/dp_1">

    <RelativeLayout android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ticker_inside"
        android:padding="@dimen/dp_8">

        <com.tokopedia.design.component.ticker.TouchViewPager
            android:id="@+id/view_pager_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tokopedia.design.viewpagerindicator.CirclePageIndicator
            android:id="@+id/page_indicator_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view_pager_ticker"
            android:padding="@dimen/dp_5" />

        <ImageView
            android:id="@+id/imageview_ticker_action_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            app:srcCompat="@drawable/ic_ticker_action_close_12dp"
            android:contentDescription="@string/text_ticker_action_close" />

    </RelativeLayout>

</FrameLayout>
