<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_med"
    android:paddingBottom="@dimen/padding_small"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:background="@drawable/speechbubble_r90" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/smiley_size"
            android:layout_height="@dimen/smiley_size"
            android:src="@drawable/ic_smiley_good"/>
        <TextView
            android:minWidth="@dimen/smiley_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:gravity="center"
            android:paddingTop="@dimen/padding_vs"
            android:text="0"
            android:id="@+id/text_smile"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small">
        <ImageView
            android:layout_width="@dimen/smiley_size"
            android:layout_height="@dimen/smiley_size"
            android:src="@drawable/ic_smiley_netral"/>
        <TextView
            android:minWidth="@dimen/smiley_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:gravity="center"
            android:paddingTop="@dimen/padding_vs"
            android:text="0"
            android:id="@+id/text_netral"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/smiley_size"
            android:layout_height="@dimen/smiley_size"
            android:src="@drawable/ic_smiley_bad"/>
        <TextView
            android:minWidth="@dimen/smiley_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:gravity="center"
            android:paddingTop="@dimen/padding_vs"
            android:text="0"
            android:id="@+id/text_bad"/>
    </LinearLayout>


</LinearLayout>