<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Unify_N0"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/dp_32"
        android:maxWidth="@dimen/dp_32"
        android:adjustViewBounds="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        tools:src="@drawable/ic_badge_shop_official"
        tools:ignore="contentDescription"
        tools:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/divider"/>

    <TextView
        android:id="@+id/tv_title_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_goneMarginLeft="16dp"
        app:layout_goneMarginStart="16dp"
        android:textColor="@color/Unify_N600"
        android:textSize="14sp"
        android:singleLine="true"
        tools:text="Bakar bakar Bakar bakar Bakar bakar Bakar bakar"
        app:layout_constraintLeft_toRightOf="@+id/iv_icon_menu"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_icon_menu_end"
        app:layout_constraintEnd_toStartOf="@+id/iv_icon_menu_end"
        app:layout_constraintBottom_toTopOf="@+id/divider"/>

    <ImageView
        android:id="@+id/iv_icon_menu_end"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_check"
        tools:visibility="visible"
        tools:ignore="contentDescription"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/divider"/>

    <View android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/Unify_N100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>