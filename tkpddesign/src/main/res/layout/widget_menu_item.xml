<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12">

        <ImageView
            android:id="@+id/iv_icon_menu"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:adjustViewBounds="true"
            android:padding="@dimen/dp_8"
            tools:src="@drawable/ic_badge_shop_official"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_title_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_icon_menu"
            android:layout_toRightOf="@id/iv_icon_menu"
            android:textColor="@color/grey_750"
            android:textSize="@dimen/sp_14"
            tools:text="Bakar bakar Bakar bakar Bakar bakar Bakar bakar" />

        <ImageView
            android:id="@+id/iv_icon_menu_end"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:adjustViewBounds="true"
            android:padding="@dimen/dp_8"
            tools:src="@drawable/ic_check"
            tools:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@color/grey_300" />

</LinearLayout>