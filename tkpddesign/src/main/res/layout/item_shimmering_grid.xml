        />

    <include android:layout_width="120dp"
        android:layout_margin="@dimen/margin_ms"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        layout="@layout/include_shimmering_grid"
        />

    <include android:layout_width="120dp"
        android:layout_margin="@dimen/margin_ms"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        layout="@layout/include_shimmering_grid"
        />

    <include android:layout_width="120dp"
        android:layout_margin="@dimen/margin_ms"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        layout="@layout/include_shimmering_grid"
        />
</GridLayout>