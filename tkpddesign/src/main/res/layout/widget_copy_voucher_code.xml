<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/button_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:minHeight="@dimen/height_button_voucher"
        android:background="@drawable/shape_copy_voucher_code_right_default">

        <ImageView
            android:id="@+id/icon_copy_code"
            android:layout_width="@dimen/image_width_xxs"
            android:layout_height="@dimen/image_width_xxs"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_check_orange_24dp"
            />

        <TextView
            android:id="@+id/text_copy_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_small"
            android:layout_marginLeft="@dimen/padding_small"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/font_black_disabled_38"
            android:lineSpacingExtra="2sp"
            android:text="@string/button_copy_voucher_code"
            android:visibility="invisible"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_voucher_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button_copy"
        android:layout_toStartOf="@+id/button_copy"
        android:background="@drawable/shape_copy_voucher_code_left_default"
        android:minHeight="@dimen/height_button_voucher"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/tkpd_main_orange"
        tools:text="GRATISONGKIR"
        android:textIsSelectable="false"
        />

</RelativeLayout>