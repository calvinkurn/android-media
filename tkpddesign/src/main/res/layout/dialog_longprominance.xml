<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_18"
    android:paddingRight="@dimen/dp_18"
    android:paddingTop="@dimen/dp_24">

    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/font_black_primary_70"
        android:textSize="@dimen/sp_16"
        tools:text="Title Goes Here" />

    <TextView
        android:id="@+id/tv_desc_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_24"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/sp_5"
        android:textColor="@color/font_black_secondary_54"
        android:textSize="@dimen/sp_14"
        tools:text="Make the copy compact to communicate what you want, approx 50 character like this" />

    <TextView
        android:id="@+id/btn_ok_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@null"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:textAllCaps="false"
        android:textColor="@color/tkpd_main_green"
        android:textSize="@dimen/sp_14"
        tools:text="CTA Here" />

    <TextView
        android:id="@+id/btn_cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@null"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:textAllCaps="false"
        android:textColor="@color/font_black_secondary_54"
        android:textSize="@dimen/sp_14"
        tools:text="CTA Here" />

</LinearLayout>