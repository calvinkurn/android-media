<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal">

    <com.tokopedia.design.text.DecimalInputView
        android:id="@+id/decimal_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:decimal_max_length="@integer/product_max_counter_int_length" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/image_button_minus"
        style="@style/ImageButton.Counter"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_8"
        app:srcCompat="@drawable/bg_button_counter_minus" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/image_button_plus"
        style="@style/ImageButton.Counter"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_8"
        app:srcCompat="@drawable/bg_button_counter_plus" />

</LinearLayout>