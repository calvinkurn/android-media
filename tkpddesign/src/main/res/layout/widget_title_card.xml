<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vg_title_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:divider="@drawable/line_separator_medium"
    android:orientation="vertical"
    android:showDividers="middle">

    <FrameLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">
        <LinearLayout
            android:id="@+id/vg_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_sm"
            android:layout_marginRight="@dimen/margin_sm"
            android:layout_marginTop="@dimen/margin_small">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:src="@drawable/ic_empty_state"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/tv_title"
                style="@style/TextView.Subheading"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="Title"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_arrow_down"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>
    </FrameLayout>

    <com.tokopedia.design.loading.LoadingStateView
        android:id="@+id/loading_state_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>