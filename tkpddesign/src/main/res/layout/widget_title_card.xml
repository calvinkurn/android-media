<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vg_title_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:divider="@drawable/line_separator_medium"
    android:orientation="vertical"
    android:showDividers="middle">

    <FrameLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/vg_title_content"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="@dimen/margin_sm"
            android:layout_marginRight="@dimen/margin_sm"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/image_width_xs"
                android:layout_height="@dimen/image_width_xs"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_ms"
                android:layout_marginRight="@dimen/margin_ms"
                android:visibility="gone"
                tools:src="@drawable/ic_empty_state"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextView.Subheading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:maxLines="1"
                tools:text="Title" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_arrow_down"
                android:layout_width="@dimen/image_width_xxs"
                android:layout_height="@dimen/image_width_xxxs"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>
    </FrameLayout>

    <com.tokopedia.design.loading.LoadingStateView
        android:id="@+id/loading_state_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>