<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ticker"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_2"
    android:paddingStart="@dimen/dp_3"
    android:paddingLeft="@dimen/dp_3"
    android:paddingTop="@dimen/dp_1"
    android:paddingEnd="@dimen/dp_1"
    android:paddingRight="@dimen/dp_1"
    android:paddingBottom="@dimen/dp_1">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/ticker_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toStartOf="@+id/ticker_close_button"
            android:layout_toLeftOf="@+id/ticker_close_button"
            android:maxLines="2"
            app:fontSize="micro"
            tools:text="Type information with approx. 80 CHARACTER, for more or another direction. TEXT LINK" />

        <ImageView
            android:id="@+id/ticker_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/text_ticker_action_close"
            app:srcCompat="@drawable/ic_ticker_action_close_12dp" />

    </RelativeLayout>

</LinearLayout>