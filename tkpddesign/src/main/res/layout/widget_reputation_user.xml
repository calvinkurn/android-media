<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buyer_reputation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/bg_rounded_corners_green"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_8"
    android:paddingRight="@dimen/dp_8"
    android:paddingTop="@dimen/dp_3"
    android:paddingBottom="@dimen/dp_3"
    android:visibility="visible">

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:gravity="center_vertical"
        app:srcCompat="@drawable/ic_smiley_empty"
        />

    <TextView
        android:id="@+id/text_view_percentage"
        style="@style/TextView.Micro"
        android:textColor="@color/strong_green"
        android:layout_marginLeft="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_2"
        android:gravity="center_vertical"
        android:visibility="visible"
        tools:text="100%"/>

</LinearLayout>