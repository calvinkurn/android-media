<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_bottom_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/font_title_big"
                android:textStyle="bold"
                android:textColor="@color/font_black_primary_70"
                tools:text="Contoh Judul"/>

            <TextView
                android:id="@+id/body_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                style="@style/TextView.Small"
                tools:text="Contoh deskripsi dari bottom sheet yang diberikan. Contoh deskripsi dari bottom sheet yang diberikan. Contoh deskripsi dari bottom sheet yang diberikan. "/>

            <TextView
                android:id="@+id/link_bottom_sheet"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                style="@style/TextView.Small.Green"
                tools:text="Lihat selengkapnya (Contoh)"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_bottom_sheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="@dimen/dp_96"
            android:padding="@dimen/padding_small"
            android:adjustViewBounds="true"
            tools:src="@drawable/ic_badge_gold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/button_opsi_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/margin_small"
        android:gravity="center"
        android:background="@drawable/rect_white_rounded_stroke_gray"
        android:textColor="@color/font_black_disabled_38"
        tools:text="Test" />

    <TextView
        android:id="@+id/button_close_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/bg_button_green_enabled"
        android:gravity="center"
        android:text="@string/text_ticker_action_close"
        android:textColor="@color/font_white_primary_70" />

</LinearLayout>