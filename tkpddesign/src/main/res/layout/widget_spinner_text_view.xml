<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout"
        style="@style/TextInputLayout"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.VerySmall">

        <com.tokopedia.design.text.SpinnerAutoComplete
            android:id="@+id/edit_text_spinner"
            style="@style/EditText.GreenHighlight"
            android:layout_width="match_parent"
            android:focusable="false"
            android:inputType="none"
            android:textIsSelectable="true" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_view_chevron_icon"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_small"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_down_grey" />
    </LinearLayout>
</FrameLayout>