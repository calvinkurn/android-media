<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal">

    <com.tokopedia.design.text.SpinnerTextView
        android:id="@+id/spinner_text_view"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content" />

    <com.tokopedia.design.text.CounterInputView
        android:id="@+id/counter_input_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_vs"
        android:layout_marginStart="@dimen/padding_vs"
        android:layout_weight="1" />
</LinearLayout>