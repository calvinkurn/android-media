<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:paddingTop="@dimen/padding_small">

    <FrameLayout
        android:id="@+id/layout_input_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        tools:visibility="gone">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textview_voucher"
            android:drawablePadding="@dimen/padding_ms"
            app:drawableLeftCompat="@drawable/ic_kupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_kupon"
            android:drawableStart="@drawable/ic_kupon"
            android:gravity="center"
            android:text="@string/use_promo_code_or_coupon"
            android:textColor="@color/tkpd_main_green"
            tools:text="Gunakan Kode Promo atau Kupon"/>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layout_used_promo"
        style="@style/CardViewWidget.UsedVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/label_promo_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="Kode Promo: "/>

        <TextView
            android:id="@+id/textview_promo_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_vvs"
            android:layout_marginStart="@dimen/padding_vvs"
            android:layout_toEndOf="@id/label_promo_code"
            android:layout_toLeftOf="@+id/button_cancel"
            android:layout_toRightOf="@+id/label_promo_code"
            android:layout_toStartOf="@+id/button_cancel"
            android:textColor="@color/tkpd_main_orange"
            tools:text="TOPEDONGKIR"/>

        <TextView
            android:id="@+id/textview_voucher_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_promo_code"
            android:layout_gravity="center"
            tools:text="Potensi mendapatkan potongan ongkos kirim Rp. 40.000"/>

        <ImageView
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_ticker_action_close_12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_ticker_action_close_12dp"/>

    </RelativeLayout>

</FrameLayout>