<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_rounded_white_shadow"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_vs"
    android:paddingLeft="@dimen/padding_med"
    android:paddingRight="@dimen/padding_med"
    android:paddingTop="@dimen/padding_vs">

    <LinearLayout
        android:id="@+id/linear_layout_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/image_width_s">

        <ImageView
            android:id="@+id/image_view_icon_1"
            android:layout_width="@dimen/image_width_xs"
            android:layout_height="@dimen/image_width_xs"
            tools:src="@drawable/ic_badge_bronze" />

        <TextView
            android:id="@+id/text_view_label_1"
            style="@style/TextView.Body1"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginStart="@dimen/margin_vs"
            tools:text="@string/app_name" />
    </LinearLayout>

    <View
        android:id="@+id/view_separator"
        android:layout_width="2dp"
        android:layout_height="@dimen/image_width_s"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:background="@color/grey_300"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_layout_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/image_width_s"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_view_icon_2"
            android:layout_width="@dimen/image_width_xs"
            android:layout_height="@dimen/image_width_xs"
            tools:src="@drawable/ic_badge_bronze" />

        <TextView
            android:id="@+id/text_view_label_2"
            style="@style/TextView.Body1"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginStart="@dimen/margin_vs"
            tools:text="@string/app_name" />
    </LinearLayout>

</LinearLayout>