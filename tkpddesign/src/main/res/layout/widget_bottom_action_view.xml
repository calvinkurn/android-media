<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_rounded_white_shadow">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/padding_vs">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_layout_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="@dimen/image_width_s"
            android:paddingLeft="@dimen/padding_vs"
            android:paddingRight="@dimen/padding_vs">

            <ImageView
                android:id="@+id/image_view_icon_1"
                android:layout_width="@dimen/image_width_xs"
                android:layout_height="@dimen/image_width_xs"
                android:layout_marginEnd="@dimen/padding_vs"
                android:layout_marginRight="@dimen/padding_vs"
                tools:src="@drawable/ic_badge_bronze" />

            <TextView
                android:id="@+id/text_view_label_1"
                style="@style/TextView.Micro"
                tools:text="@string/app_name" />

            <View
                android:id="@+id/v_mark_1"
                android:layout_width="@dimen/image_width_xxxs"
                android:layout_height="@dimen/image_width_xxxs"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginStart="@dimen/margin_vs"
                android:background="@drawable/circle_red"
                android:visibility="invisible"
                tools:visibility="visible" />
        </android.support.v7.widget.LinearLayoutCompat>

        <View
            android:id="@+id/view_separator"
            android:layout_width="2dp"
            android:layout_height="@dimen/image_width_s"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@color/grey_300"
            android:visibility="visible" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_layout_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="100dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="@dimen/image_width_s"
            android:paddingLeft="@dimen/padding_vs"
            android:paddingRight="@dimen/padding_vs"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/image_view_icon_2"
                android:layout_width="@dimen/image_width_xs"
                android:layout_height="@dimen/image_width_xs"
                android:layout_marginEnd="@dimen/padding_vs"
                android:layout_marginRight="@dimen/padding_vs"
                tools:src="@drawable/ic_badge_bronze" />

            <TextView
                android:id="@+id/text_view_label_2"
                style="@style/TextView.Micro"
                tools:text="@string/app_name" />

            <View
                android:id="@+id/v_mark_2"
                android:layout_width="@dimen/image_width_xxxs"
                android:layout_height="@dimen/image_width_xxxs"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginStart="@dimen/margin_vs"
                android:background="@drawable/circle_red"
                android:visibility="invisible"
                tools:visibility="visible" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</FrameLayout>