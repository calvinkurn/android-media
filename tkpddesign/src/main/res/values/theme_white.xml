<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.White" parent="Base.Theme">
        <item name="toolbarTheme">@style/Toolbar.White</item>
        <item name="tabTheme">@style/TabBar.White</item>
        <item name="titleTextAppearance">@style/TitleTextAppearance.White</item>
    </style>
    
    <style name="Theme.White.PopupTransparent">
        <item name="popupTheme">@style/TransparentPopupTheme</item>
    </style>

    <style name="TransparentPopupTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar.White" parent="Base.Toolbar.Theme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/green_600</item>
        <item name="android:background">@color/Unify_N0</item>
        <item name="actionModeBackground">@color/Unify_N0</item>
        <item name="android:actionModeBackground">@color/Unify_N0</item>
        <item name="android:textColorPrimary">@color/font_black_primary_70</item>
        <item name="android:actionMenuTextColor">@color/font_black_primary_70</item>
        <item name="android:textColorSecondary">@color/font_black_primary_70</item>
    </style>

    <style name="TabBar.White" parent="BaseTabBar">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:background">@color/Unify_N0</item>
        <item name="tabTextColor">@color/grey_title</item>
        <item name="tabTextAppearance">@style/TitlePageWhiteIndicator</item>
        <item name="tabIndicatorColor">@color/tkpd_main_green</item>
        <item name="tabSelectedTextColor">@color/tkpd_main_green</item>
    </style>

    <style name="TitlePageWhiteIndicator">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextAppearance.White">
        <item name="android:textColor">@color/font_black_primary_70</item>
    </style>
</resources>