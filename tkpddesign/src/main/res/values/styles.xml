<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LabelLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">@dimen/margin_sm</item>
        <item name="android:paddingLeft">@dimen/margin_sm</item>
        <item name="android:paddingRight">@dimen/margin_sm</item>
        <item name="android:paddingBottom">@dimen/margin_sm</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/font_black_secondary_54</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout.VerySmall">
        <item name="android:textSize">@dimen/font_micro</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/color_state_disable_text</item>
    </style>

    <style name="EditText.Currency">
        <item name="android:inputType">number</item>
    </style>

    <style name="EditText.GreenHighlight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHighlight">@color/tkpd_main_green</item>
        <item name="android:textColor">@drawable/color_state_disable_text</item>
    </style>

    <style name="helperTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/font_black_secondary_54</item>
    </style>

    <style name="successTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/tkpd_main_green</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:padding">12dp</item>`
        <item name="android:button">@drawable/bg_radio_button</item>
        <item name="android:textColor">@color/font_black_primary_70</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Button.Submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxHeight">52dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Button.Submit.Orange">
        <item name="android:background">@drawable/bg_button_orange</item>
    </style>

    <style name="Button.Submit.Green">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/text_submit_button</item>
    </style>

    <style name="Button.Submit.Green.Full">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>


    <style name="Button.Submit.White">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/font_black_secondary_54</item>
    </style>

    <style name="Button.Submit.White.Stroke">
        <item name="android:background">@drawable/bg_button_white_stroke</item>
    </style>

    <style name="Button.Submit.White.Border">
        <item name="android:background">@drawable/bg_button_white_border</item>
        <item name="android:textColor">@color/font_black_secondary_54</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageButton.Counter">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_input_margin_offset</item>
        <item name="android:layout_marginRight">@dimen/text_input_margin_offset</item>
        <item name="android:theme">@style/TextInputLayoutColorLine</item>
    </style>

    <style name="TextInputLayoutColorLine" parent="Theme.Design.Light"> <!-- stackoverflow.com/questions/35767158/ -->
        <item name="android:textColorHint">@color/font_black_secondary_54</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/tkpd_main_green</item>
        <item name="colorControlHighlight">@color/tkpd_main_green</item>
    </style>

    <style name="HintTextInputLayout" parent="TextInputLayout">
        <item name="defaultTextColorLabel">@color/font_black_secondary_54</item>
        <item name="focusedTextColorLabel">@color/font_black_secondary_54</item>
        <item name="disabledTextColorLabel">@color/font_black_secondary_54</item>
        <item name="android:theme">@style/HintTextInputLayoutColorLine</item>
    </style>

    <style name="HintTextInputLayoutColorLine" parent="TextInputLayoutColorLine">
        <item name="android:textColorHint">@color/grey_300</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:textColor">@color/font_black_primary_70</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/tkpd_main_green</item>
        <item name="android:textColorSecondary">@color/grey_400</item>
    </style>

    <style name="BottomSheetBuilder.DialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetBuilder.BottomSheetStyle</item>
    </style>


    <style name="BottomSheetBuilder.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/white</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>


    <style name="CardViewWidget" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardViewWidget.Voucher" >
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CardViewWidget.InputVoucher">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CardViewWidget.UsedVoucher">
        <item name="android:background">@drawable/bg_used_voucher</item>
    </style>

    <style name="Tabs">
    </style>

    <style name="Tabs.Main" parent="Tabs">
        <item name="footerColor">@color/white</item>
        <item name="footerPadding">15dp</item>
        <item name="topPadding">12dp</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">5dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="selectedBold">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_micro</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/border_bottom_no_rounded</item>
    </style>

    <style name="Tabs.Secondary" parent="Tabs">
        <item name="footerColor">@color/tkpd_main_green</item>
        <item name="footerPadding">15dp</item>
        <item name="topPadding">12dp</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">5dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="selectedBold">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tkpd_main_green</item>
        <item name="android:textSize">@dimen/font_micro</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/border_bottom_no_rounded</item>
    </style>

    <style name="RatingBar.Small" parent="style/Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/tkpd_rating_bar</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

</resources>