<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/font_black_primary_70</item>
    </style>

    <style name="TextView.TopAds">
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextView.Display4">
        <item name="android:textSize">@dimen/font_display4</item>
    </style>

    <style name="TextView.Display3">
        <item name="android:textSize">@dimen/font_display3</item>
    </style>

    <style name="TextView.Display2">
        <item name="android:textSize">@dimen/font_display2</item>
    </style>

    <style name="TextView.Display1">
        <item name="android:textSize">@dimen/font_display1</item>
    </style>

    <style name="TextView.Display1.Green">
        <item name="android:textColor">@color/font_top_ads_green</item>
    </style>

    <style name="TextView.Headline">
        <item name="android:textSize">@dimen/font_headline</item>
    </style>

    <style name="TextView.Headline.Green">
        <item name="android:textColor">@color/font_top_ads_green</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">@dimen/font_headline</item>
    </style>

    <style name="TextView.TopAds.Subheading">
        <item name="android:textSize">@dimen/font_subheading</item>
    </style>

    <style name="TextView.TopAds.Subheading.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TopAds.Subheading.Green">
        <item name="android:textColor">@color/font_top_ads_green</item>
    </style>

    <style name="TextView.TopAds.Subheading.Gray">
        <item name="android:textColor">@color/font_black_secondary_54</item>
    </style>

    <style name="TextView.TopAds.Subheading.Black">
        <item name="android:textColor">@color/font_black_primary_70</item>
    </style>

    <style name="TextView.TopAds.Body2">
        <item name="android:textSize">@dimen/font_body2</item>
    </style>

    <style name="TextView.TopAds.Body1">
        <item name="android:textSize">@dimen/font_body1</item>
    </style>

    <style name="TextView.TopAds.Body1.Gray">
        <item name="android:textColor">@color/font_black_secondary_54</item>
    </style>

    <style name="TextView.TopAds.Body1.LightGray">
        <item name="android:textColor">@color/font_black_disabled_38</item>
    </style>

    <style name="TextView.TopAds.Body1.Black">
        <item name="android:textColor">@color/font_black_primary_70</item>
    </style>

    <style name="TextView.TopAds.Body1.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TopAds.Body1.Green">
        <item name="android:textColor">@color/font_top_ads_green</item>
    </style>

    <style name="TextView.TopAds.Caption">
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:textColor">@color/font_black_secondary_54</item>
    </style>

    <style name="TextView.TopAds.Caption.Grey">
        <item name="android:textColor">@color/font_black_disabled_38</item>
    </style>

</resources>