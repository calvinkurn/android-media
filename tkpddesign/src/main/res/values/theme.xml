<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Unify" parent="Base.Toolbar.Theme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/green_600</item>
    </style>

    <style name="Unify.Light">
        <item name="android:background">@color/default_light_bg</item>
        <item name="actionModeBackground">@color/default_light_bg</item>
        <item name="android:actionModeBackground">@color/default_light_bg</item>
        <item name="android:textColorPrimary">@color/light_primary</item>
        <item name="android:actionMenuTextColor">@color/light_primary</item>
        <item name="android:textColorSecondary">@color/light_secondary</item>
    </style>

    <style name="Unify.Dark">
        <item name="android:background">@color/default_dark_bg</item>
        <item name="actionModeBackground">@color/default_dark_bg</item>
        <item name="android:actionModeBackground">@color/default_dark_bg</item>
        <item name="android:textColorPrimary">@color/dark_primary</item>
        <item name="android:actionMenuTextColor">@color/dark_primary</item>
        <item name="android:textColorSecondary">@color/dark_secondary</item>
    </style>

    <style name="Base.Theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Base.Toolbar.Theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="subtitleTextAppearance">@style/SubTitleTextAppearance</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/Unify_N700</item>
    </style>

    <style name="TitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="SubTitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="MenuTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BaseTabBar" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">fixed</item>
    </style>
</resources>