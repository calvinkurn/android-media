query notifcenter_detail($page:Int,$typeId:Int,$tagId:Int,$lastNotifId:String){
  notifcenter_detail(page:$page,type_id:$typeId,tag_id:$tagId,last_notif_id:$lastNotifId)
  {
    list {
      notif_id
      user_id
      shop_id
      section_id
      section_key
      section_icon
      subsection_key
      template_key
      title
      short_description
      content
      type_of_user
      type_link
      create_time_unix
      create_time
      update_time_unix
      update_time
      status
      read_status
      data_notification {
        app_link
        desktop_link
        info_thumbnail_url
        mobile_link
        product_name
        product_url
      }
    }
    paging {
      has_next
      has_prev
    }
  }
}