<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="218dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_view_added_from_camera"
        style="@style/TextView.Subheading"
        android:layout_gravity="center_vertical|start"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="@string/added_from_camera_text_description" />

    <TextView
        android:id="@+id/label_view_added_from_gallery"
        style="@style/TextView.Subheading"
        android:layout_gravity="center_vertical|start"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="@string/added_from_camera_text_description" />

    <TextView
        android:id="@+id/label_view_import_from_instagram"
        style="@style/TextView.Subheading"
        android:layout_gravity="center_vertical|start"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="@string/import_from_instagram_text_description" />

</LinearLayout>