<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_med"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cashback :"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Batas Respon :"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_vs"
        android:paddingBottom="@dimen/padding_small">

        <TextView
            android:id="@+id/value_cashback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5%"
            android:textSize="@dimen/font_small"
            android:textColor="@color/grey"
            />

        <TextView
            android:id="@+id/value_response_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24 Jam Lagi"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"
            android:textColor="@color/grey"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kota Tujuan :"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pengiriman :"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_vs">

        <TextView
            android:id="@+id/value_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jakarta Barat"
            android:textSize="@dimen/font_small"
            android:textColor="@color/grey"
            />

        <TextView
            android:id="@+id/value_shipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gojek - Go send"
            android:textStyle="bold"
            android:textSize="@dimen/font_small"
            android:textColor="@color/grey"
            />

    </LinearLayout>

</LinearLayout>