<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vg_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/image_width_l"
                android:layout_height="@dimen/image_width_l"
                android:layout_marginTop="@dimen/margin_ms"
                android:src="@drawable/ic_icon_openshop_box" />

            <TextView
                style="@style/TextView.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                android:text="@string/title_shop_setting_logistic" />

            <TextView
                style="@style/TextView.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_ms"
                android:layout_marginBottom="@dimen/margin_ms"
                android:gravity="center"
                android:text="@string/description_shop_setting_logistic"
                android:textAlignment="center" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/image_width_xxxl">
                <LinearLayout
                    android:id="@+id/vg_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true">
                    <com.tokopedia.seller.shop.setting.view.CourierListViewGroup
                        android:id="@+id/vg_courier_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_vs"
                        android:paddingLeft="@dimen/margin_sm"
                        android:paddingRight="@dimen/margin_sm"
                        android:paddingTop="@dimen/padding_vs"/>
                    <!--<android.support.v7.widget.RecyclerView-->
                        <!--android:id="@+id/recycler_view"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:clipToPadding="false"-->
                        <!--android:paddingBottom="@dimen/padding_vs"-->
                        <!--android:paddingLeft="@dimen/margin_sm"-->
                        <!--android:paddingRight="@dimen/margin_sm"-->
                        <!--android:paddingTop="@dimen/padding_vs"/>-->

                    <Button
                        android:id="@+id/continue_button"
                        style="@style/Button.Submit.Green"
                        android:layout_marginTop="@dimen/margin_sm"
                        android:text="@string/title_next" />
                </LinearLayout>
                <include layout="@layout/widget_container_loading"
                    android:id="@+id/loading"/>
            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>