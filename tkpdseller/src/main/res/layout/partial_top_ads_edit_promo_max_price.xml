<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_max_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Small"
        style="@style/TextInputLayout">

        <com.tokopedia.seller.topads.view.widget.PrefixEditText
            android:id="@+id/edit_text_max_price"
            style="@style/EditText.Currency"
            android:layout_width="match_parent"
            app:prefix="@string/title_currency_rp_space"
            android:text="@string/top_ads_detail_edit_default_max_price_currency_value"
            android:hint="@string/label_top_ads_max_price_hint"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        style="@style/TextView.TopAds.Body.Gray"
        android:maxLines="3"
        android:text="@string/label_top_ads_max_price_description"/>

</LinearLayout>