<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_shop_open_location">

    <com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout
        android:id="@+id/shop_desc_input_layout"
        style="@style/HintTextInputLayout"
        android:hint="@string/pickup_location">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/open_shop_address_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.ShopSetting"
            android:lineSpacingExtra="6sp"
            android:hint="@string/write_address_text" />
    </com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black_38"
        android:lineSpacingExtra="5sp"
        android:text="@string/fill_width_address_desc" />
</merge>