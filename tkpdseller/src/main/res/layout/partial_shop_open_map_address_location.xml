<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="26dp"
    tools:showIn="@layout/fragment_shop_open_location">

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/shop_desc_input_layout"
        style="@style/HintTextInputLayout"
        android:hint="@string/shop_open_pickup_location"
        android:layout_marginTop="@dimen/margin_med">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/open_shop_address_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditText.ShopSetting"
            android:lineSpacingExtra="6sp"
            android:hint="@string/shop_open_write_address_text" />
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <TextView
        style="@style/TextView.Micro.BlackDisabled"
        android:lineSpacingExtra="5sp"
        android:text="@string/shop_open_fill_width_address_desc" />
</merge>