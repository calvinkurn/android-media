<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_sm"
    android:layout_marginBottom="@dimen/margin_vs"
    tools:showIn="@layout/fragment_shop_open_location">

    <TextView
        style="@style/TextView.Caption.BlackDisabled"
        android:lineSpacingExtra="10sp"
        android:text="@string/optional_pinpoint_location_text"
        android:layout_marginBottom="@dimen/margin_small"/>

    <FrameLayout
        android:id="@+id/empty_map_view"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="@dimen/image_width_xxxl">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_empty_map"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_margin="@dimen/margin_sm"
            style="@style/TextView.Caption.BlackSecondary"
            android:lineSpacingExtra="5sp"
            android:gravity="center_horizontal"
            android:text="@string/pin_pickup_location_text" />

        <TextView
            android:id="@+id/pin_pickup_location"
            style="@style/TextView.Caption.BlackSecondary"
            android:textStyle="bold"
            android:lineSpacingExtra="8sp"
            android:gravity="center_horizontal"
            android:text="@string/pin_location_pickup"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/margin_sm" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/mapview_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_width_xxxl"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:clickable="false"
            app:liteMode="true"
            app:mapType="normal"
            app:cameraZoom="15" />
    </LinearLayout>

    <TextView
        android:id="@+id/generated_location_open_shop"
        style="@style/TextView.Caption"
        android:lineSpacingExtra="6sp"
        tools:text="@string/default_address_text"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/generated_location_open_shop_copy"
        style="@style/TextView.Caption.Green"
        android:text="@string/default_address_text_use_this"
        android:visibility="gone"
        />

</LinearLayout>