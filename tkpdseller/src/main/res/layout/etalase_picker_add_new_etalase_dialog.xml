<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/etalase_picker_add_etalase_title_dialog"
        android:textSize="20sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etalase_picker_add_etalase_name_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/etalase_picker_add_etalase_name_hint">

        <EditText
            android:id="@+id/etalase_picker_add_etalase_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/etalase_picker_add_etalase_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/etalase_picker_add_etalase_add_button_dialog" />

        <TextView
            android:id="@+id/etalase_picker_add_etalase_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toLeftOf="@id/etalase_picker_add_etalase_confirm"
            android:layout_toStartOf="@id/etalase_picker_add_etalase_confirm"
            android:text="@string/etalase_picker_add_etalase_cancel_button_dialog" />

    </RelativeLayout>

</LinearLayout>