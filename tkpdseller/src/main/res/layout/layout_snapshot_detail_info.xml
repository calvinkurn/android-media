<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_med"
        android:paddingLeft="@dimen/margin_small"
        android:paddingRight="@dimen/margin_small"
        android:paddingTop="@null">

        <TableRow
            android:id="@id/tr_preorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".50"
                android:background="@drawable/layout_15"
                android:padding="@dimen/padding_small"
                android:text="@string/title_preorder"
                android:textColor="#868686"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@id/tv_preorder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".50"
                android:background="@drawable/layout_16"
                android:padding="@dimen/padding_small"
                android:textColor="#464646"
                android:textSize="@dimen/fonts" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_14"
                android:padding="@dimen/padding_small"
                android:text="@string/title_min_order"
                android:textColor="#868686"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@id/tv_minimum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_13"
                android:padding="@dimen/padding_small"
                android:textColor="#464646"
                android:textSize="@dimen/fonts" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_11"
                android:padding="@dimen/padding_small"
                android:text="@string/title_weight"
                android:textColor="#868686"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@id/tv_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_9"
                android:padding="@dimen/padding_small"
                android:textColor="#464646"
                android:textSize="@dimen/fonts" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_11"
                android:padding="@dimen/padding_small"
                android:text="@string/title_insurance"
                android:textColor="#868686"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@id/tv_insurance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_9"
                android:padding="@dimen/padding_small"
                android:textColor="#464646"
                android:textSize="@dimen/fonts" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_11"
                android:padding="@dimen/padding_small"
                android:text="@string/title_condition"
                android:textColor="#868686"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@id/tv_condition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/layout_9"
                android:padding="@dimen/padding_small"
                android:textColor="#464646"
                android:textSize="@dimen/fonts" />
        </TableRow>

    </TableLayout>

</RelativeLayout>