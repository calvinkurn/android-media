<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_reputation_retry"
        android:layout_width="96dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_empty_penalti_reputasi" />

    <TextView
        android:id="@+id/good_job_reputation_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_reputation_retry"
        android:layout_centerHorizontal="true"
        android:text="@string/reputation_history_label_good_job"
        android:layout_marginBottom="2dp"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/description_reputation_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_job_reputation_retry"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/reputation_history_label_info_no_penalty"
        android:textAlignment="gravity"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/reputation_container_change_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_reputation_retry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/reputation_history_label_change_date"
            android:textColor="@color/tkpd_main_green"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/calendar_arrow_icon"
            android:layout_width="@dimen/image_width_xxxs"
            android:layout_height="@dimen/image_width_xxs"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

</RelativeLayout>