<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_reputation_retry"
        android:layout_width="96dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_empty_penalti_reputasi" />

    <TextView
        android:id="@+id/good_job_reputation_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_reputation_retry"
        android:layout_centerHorizontal="true"
        android:text="Sangat Baik!"
        android:textColor="@color/thirty_eight_percent_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_reputation_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_job_reputation_retry"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Tidak ada penalti pada periode ini.\nUbah tanggal untuk melihat penalti pada periode sebelumnya."
        android:textAlignment="gravity"
        android:textColor="@color/thirty_eight_percent_black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/reputation_container_change_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_reputation_retry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ubah Tanggal"
            android:textColor="@color/tkpd_main_green"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/calendar_arrow_icon"
            android:layout_width="@dimen/topads_arrow_left_width"
            android:layout_height="@dimen/topads_arrow_left_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/ic_arrow_right" />
    </LinearLayout>

</RelativeLayout>