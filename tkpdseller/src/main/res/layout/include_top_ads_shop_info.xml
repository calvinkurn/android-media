<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LabelLayoutWithBorder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view_shop_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_penjualan"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_ads_dashboard_padding_cards"
        android:layout_marginStart="@dimen/top_ads_dashboard_padding_cards"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_shop_title"
            style="@style/TextView.TopAdsShopTitle"
            android:text="@string/top_ads_statistic_info_default_value"/>

        <TextView
            android:id="@+id/text_view_deposit_desc"
            style="@style/TextView.TopAdsShopContent"
            android:text="@string/top_ads_statistic_info_default_value"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/image_button_add_deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_add_green"/>
</LinearLayout>