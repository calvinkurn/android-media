<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/gm_tooltip_width"
    android:layout_height="@dimen/gm_tooltip_height">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_tooltip"
        android:minWidth="@dimen/gm_tooltip_text_min_width"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/gm_tooltip_text_compare_margin"
        android:paddingRight="@dimen/gm_tooltip_text_compare_margin"
        android:paddingBottom="@dimen/gm_tooltip_text_bottom">

        <TextView
            android:id="@+id/gm_stat_tooltip_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            tools:text="3"/>

    </RelativeLayout>
</FrameLayout>
