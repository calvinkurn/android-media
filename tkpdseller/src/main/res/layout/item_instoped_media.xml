<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.core.customwidget.SquareImageView
        android:id="@+id/img"
        android:layout_width="@dimen/se_img_size"
        android:layout_height="@dimen/se_img_size"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        />

    <RelativeLayout
        android:layout_width="@dimen/se_img_size"
        android:layout_height="@dimen/se_img_size"
        android:background="@drawable/dark_overlay"
        android:id="@id/overlay"
        android:visibility="visible"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/img_thumb"
            android:layout_height="@dimen/img_thumb"
            app:srcCompat="@drawable/instoped_check"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</FrameLayout>