<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <CheckBox
        android:layout_centerVertical="true"
        android:id="@+id/checkbox_top_ads_add_product_list_non_promoted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:button="@drawable/selector_enable_selection" />

    <TextView
        android:id="@+id/top_ads_add_product_list_description_non_promoted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/checkbox_top_ads_add_product_list_non_promoted"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_med"
        android:layout_toEndOf="@id/checkbox_top_ads_add_product_list_non_promoted"
        android:layout_toRightOf="@id/checkbox_top_ads_add_product_list_non_promoted"
        android:textColor="@color/font_black_primary_70"
        android:textSize="16sp"
        tools:text="Tiento Baselayer Manset Rash Guard \nCompression Long Pants Black Red" />

    <TextView
        android:id="@+id/top_ads_add_product_list_snippet_non_promoted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/top_ads_add_product_list_description_non_promoted"
        android:layout_alignStart="@id/top_ads_add_product_list_description_non_promoted"
        android:layout_below="@id/top_ads_add_product_list_description_non_promoted"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_bg_white_border"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="11sp"
        tools:text="[Nama_Grup]" />

    <View
        android:id="@+id/empty_space_non_promoted"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/top_ads_add_product_list_description_non_promoted"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#1E000000" />

</RelativeLayout>