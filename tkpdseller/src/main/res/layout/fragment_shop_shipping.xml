<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/loader"
        android:gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_small"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.tokopedia.seller.shopsettings.shipping.customview.ShippingHeaderLayout
                android:id="@+id/fragment_shipping_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.tokopedia.seller.shopsettings.shipping.customview.ShippingAddressLayout
                android:id="@+id/shipping_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/fragment_shipping_main_layout"
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:layout_marginBottom="@dimen/padding_small"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                android:id="@+id/submit_button_create_shop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:background="@drawable/button_buy_from_cart"
                android:visibility="gone"
                android:textColor="@color/white"
                android:text="@string/submit_but"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>