<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat android:id="@+id/view_group_tutor_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.AppCompatTextView
        android:paddingTop="@dimen/dp_8"
        android:paddingLeft="@dimen/opportunity_showcase_padding"
        android:paddingRight="@dimen/opportunity_showcase_padding"
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:textSize="@dimen/font_medium"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:paddingLeft="@dimen/opportunity_showcase_padding"
        android:paddingRight="@dimen/opportunity_showcase_padding"
        android:paddingBottom="@dimen/dp_8"
        android:lineSpacingExtra="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/grey_600"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_previous"
            android:paddingLeft="@dimen/opportunity_showcase_padding"
            android:paddingTop="@dimen/opportunity_showcase_padding"
            android:paddingBottom="@dimen/opportunity_showcase_padding"
            android:layout_width="@dimen/buttom_width_small"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:clickable="true"
            android:focusable="true"/>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/view_group_indicator"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="2dp">
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_next"
            android:paddingRight="@dimen/opportunity_showcase_padding"
            android:paddingTop="@dimen/opportunity_showcase_padding"
            android:paddingBottom="@dimen/opportunity_showcase_padding"
            android:layout_width="@dimen/buttom_width_small"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="right"/>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>
