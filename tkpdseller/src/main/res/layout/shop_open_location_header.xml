<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_shop_open_location"
    >

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="25dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_location_icon"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:textStyle="normal"
        android:textColor="#b2000000"
        android:gravity="center_horizontal"
        android:text="@string/shipping_location_text"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#b2000000"
        android:lineSpacingExtra="6sp"
        android:gravity="center_horizontal"
        android:text="@string/shipping_location_text_desc"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#89000000"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="@string/shipping_location_text_choose_desc" />


    <FrameLayout
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        style="@style/View.ShopSetting.BrowseImage"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/btn_choose_from_address"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextView.Caption"
            android:text="@string/choose_from_address_list"
             />
    </FrameLayout>

</merge>