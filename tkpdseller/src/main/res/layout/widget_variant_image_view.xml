<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_image"
    android:layout_width="@dimen/image_width_variant"
    android:layout_height="@dimen/image_width_variant"
    android:background="@drawable/bg_rect_stroke_lighter_gray">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_vvs"
        tools:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_add_black_48dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_vvs"
        android:background="@drawable/bg_rect_stroke_gray_dashed" />

    <TextView
        android:id="@+id/tv_empty_stock"
        style="@style/TextView.Micro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="bottom"
        android:background="@color/tkpd_yellow_status"
        android:gravity="center"
        android:text="@string/product_variant_stock_nonactive"
        android:visibility="gone"
        tools:visibility="visible" />
</FrameLayout>