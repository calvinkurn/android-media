<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/frame_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_stroke_lighter_gray"
    android:padding="@dimen/margin_vvs"
    android:layout_marginRight="@dimen/padding_ms"
    android:layout_marginEnd="@dimen/padding_ms"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/image_width_xl"
        android:layout_height="@dimen/image_width_xl"
        tools:src="@mipmap/ic_launcher"/>

    <View
        android:layout_width="@dimen/image_width_xl"
        android:layout_height="@dimen/image_width_xl"
        android:background="@drawable/bg_rect_stroke_gray_dashed" />
</FrameLayout>