<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_location_icon"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:textStyle="normal"
            android:textColor="#b2000000"
            android:gravity="center_horizontal"
            tools:text="Lokasi Pengiriman"
            android:layout_marginTop="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#b2000000"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            tools:text="Lengkapi informasi lokasi pengiriman untuk memilih kurir yang tersedia di lokasi Anda."
            android:layout_marginTop="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#89000000"
            android:gravity="center_horizontal"
            android:layout_marginTop="32dp"
            tools:text="Pilih dari Daftar Alamat jika alamat pengiriman sama dengan alamat pembelian yang pernah Anda isi"
            />

        <Button
            android:id="@+id/btn_choose_from_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#89000000"
            android:lineSpacingExtra="7sp"
            android:gravity="center"
            tools:text="Pilih dari Daftar Alamat"
            android:background="@drawable/bg_rect_gray_round"
            android:layout_marginTop="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginTop="32dp"/>

        <com.tokopedia.seller.common.widget.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content="@string/product_label_choose"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="Kota Asal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginTop="32dp"/>

        <com.tokopedia.seller.common.widget.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content="@string/product_label_choose"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="Kode Pos" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginTop="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/black_38"
                    android:lineSpacingExtra="10sp"
                    tools:text="Pinpoint Lokasi (Opsional)"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_empty_state_kaktus"/>
                    <TextView
                        android:layout_margin="15.2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#89000000"
                        android:lineSpacingExtra="5sp"
                        android:gravity="center_horizontal"
                        tools:text="Tandai lokasi pickup dalam peta jika Anda menggunakan kurir Express (seperti Go-Send) atau Cargo Service."
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="#89000000"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        tools:text="Tandai Lokasi Pickup"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="15.2dp"
                        />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapview"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:clickable="false"
                        app:liteMode="true"
                        app:mapType="normal"
                        app:cameraZoom="15"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:lineSpacingExtra="6sp"
                        tools:text="Wisma 77 Tower 2, Jalan Letjen S. Parman, Palmerah, 11410. Gunakan Alamat Ini "
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_38"
            tools:text="Alamat Pick Up"
            android:layout_marginTop="32.3dp"
            />
        
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_38"
            android:lineSpacingExtra="6sp"
            tools:text="Tulis jalan, nomor rumah, gedung/landmark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_38"
            android:lineSpacingExtra="5sp"
            tools:text="Isi dengan jalan, nomor rumah, kecamatan, nama gedung, landmark dekat lokasi dan detail lainnya."
            />

        <Button
            android:id="@+id/button_submit"
            style="@style/Button.Submit.Green"
            android:text="Selanjutnya" />

        <Button
            android:id="@+id/button_submit_and_later"
            style="@style/Button.Submit.Green"
            android:text="Simpan dan lanjutkan Nanti" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>