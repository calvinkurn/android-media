<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/shop_open_location_header" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginTop="32dp"/>

        <com.tokopedia.seller.common.widget.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content="@string/product_label_choose"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="Kota Asal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <com.tokopedia.seller.common.widget.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content="@string/product_label_choose"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="Kode Pos" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/black_38"
                    android:lineSpacingExtra="10sp"
                    android:text="@string/optional_pinpoint_location_text"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_empty_state_kaktus"/>
                    <TextView
                        android:layout_margin="15.2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#89000000"
                        android:lineSpacingExtra="5sp"
                        android:gravity="center_horizontal"
                        android:text="@string/pin_pickup_location_text"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="#89000000"
                        android:lineSpacingExtra="8sp"
                        android:gravity="center_horizontal"
                        android:text="@string/pin_location_pickup"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="15.2dp"
                        />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapview"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:clickable="false"
                        app:liteMode="true"
                        app:mapType="normal"
                        app:cameraZoom="15"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/default_address_text"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_38"
            android:text="@string/pickup_location"
            android:layout_marginTop="32.3dp"
            />
        
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_38"
            android:lineSpacingExtra="6sp"
            android:text="@string/write_address_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_38"
            android:lineSpacingExtra="5sp"
            android:text="@string/fill_width_address_desc"
            />

        <Button
            android:id="@+id/button_submit"
            style="@style/Button.Submit.Green"
            android:text="@string/title_next" />

        <Button
            android:id="@+id/button_submit_and_later"
            style="@style/Button.Submit.Green"
            android:text="@string/title_next_and_continue_later" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>