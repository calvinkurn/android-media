<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.seller.product.view.widget.SpinnerTextView
                android:id="@+id/spinner_text_view_top_ads_keyword_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/top_ads_margin_layout"
                app:spinner_hint="@string/top_ads_keyword_type_hint" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_top_ads_keyword"
                style="@style/TextInputLayout"
                android:layout_margin="@dimen/top_ads_margin_layout"
                android:hint="@string/top_ads_keyword_change_hint">

                <EditText
                    android:id="@+id/edit_text_top_ads_keyword"
                    style="@style/EditText"
                    android:layout_width="match_parent" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_top_ads_cost_per_click"
                style="@style/TextInputLayout"
                android:layout_margin="@dimen/top_ads_margin_layout"
                android:hint="@string/top_ads_keyword_cost_per_click">

                <EditText
                    android:id="@+id/edit_text_top_ads_cost_per_click"
                    style="@style/EditText.Currency"
                    android:layout_width="match_parent" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                style="@style/TextView.TopAds.Body.Gray"
                android:maxLines="3"
                android:layout_margin="@dimen/top_ads_margin_layout"
                android:text="@string/label_top_ads_max_price_description" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_submit"
        style="@style/Button.Submit.Green"
        android:text="@string/label_top_ads_save"/>

</LinearLayout>