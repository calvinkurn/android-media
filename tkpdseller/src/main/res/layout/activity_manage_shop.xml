<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopsettings.ManageShopActivity">

    <LinearLayout
        android:id="@+id/title_shop_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:background="@drawable/bg_yellow_border_yelow"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:text="Pengaturan"
            android:textColor="@color/black"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/label_manage_your_shop"
            android:textColor="@color/black"
            android:textSize="@dimen/fonts"
            android:textStyle="bold" />
    </LinearLayout>

    <fragment
        android:id="@+id/fragment_setting_shop"
        android:name="com.tokopedia.seller.shopsettings.FragmentSettingShop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_shop_setting"/>
</RelativeLayout>
