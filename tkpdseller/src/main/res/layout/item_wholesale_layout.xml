<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="36dp">

    <TextView
        android:id="@+id/text_range_whole_sale"
        style="@style/TextView.Wholesale"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:text="2 - 10 buah" />

    <ImageView
        android:id="@+id/image_whole_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_close_grey_copy"
        android:textColor="@color/wholesale_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_whole_sale_price"
        style="@style/TextView.Wholesale"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/image_whole_sale"
        android:layout_toStartOf="@+id/image_whole_sale"
        tools:text="299.000" />
</RelativeLayout>