<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="@dimen/margin_vs"
        android:layout_marginRight="80dp"
        android:text="Product Name"
        android:textColor="#b3000000"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_xlarge"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 0,00,-"
        android:textColor="@color/price_pdp"
        android:textSize="@dimen/font_large"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/cashback_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="@color/warm_grey"
            android:text="@string/cashbak_info"
            android:textSize="@dimen/fontvs" />

        <ImageView
            android:layout_width="@dimen/margin_med"
            android:layout_height="@dimen/margin_med"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_logo_toppoint" />

        <TextView
            android:id="@+id/label_cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="@color/tkpd_main_green"
            android:text="@string/cashbak_info"
            android:textSize="@dimen/fontvs" />


    </LinearLayout>
</LinearLayout>