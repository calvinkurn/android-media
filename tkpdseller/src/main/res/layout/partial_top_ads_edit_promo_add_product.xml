<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/TextView.TopAds.Body.Gray"
        android:text="@string/top_ads_title_product"
        android:layout_marginBottom="@dimen/margin_ms"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vvvs">

        <TextView
            android:id="@+id/text_view_selected_product"
            style="@style/TextView.TopAds.Title.Black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/label_top_ads_total_selected_product"/>

        <LinearLayout
            android:id="@+id/layout_add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_product"
                style="@style/TextView.TopAds.Title.Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/label_top_ads_add_product"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/arrow_left"
                android:layout_width="@dimen/topads_arrow_left_width"
                android:layout_height="@dimen/topads_arrow_left_height"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_right"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/include_separator_horizontal_thick"/>

</LinearLayout>