<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_top_ads_shop_info"/>

        <include
            layout="@layout/include_top_ads_statistic_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_ads_dashboard_margin_cards"/>

        <com.tokopedia.seller.topads.view.widget.TopAdsLabelView
            android:id="@+id/label_view_group_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_ads_dashboard_margin_cards"
            app:title="@string/label_top_ads_groups"/>

        <include layout="@layout/include_separator_horizontal"/>

        <com.tokopedia.seller.topads.view.widget.TopAdsLabelView
            android:id="@+id/label_view_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/top_ads_dashboard_margin_bottom_space"
            app:title="@string/label_top_ads_items"/>
    </LinearLayout>
</ScrollView>