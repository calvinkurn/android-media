<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_top_ads_shop_info"/>

        <include
            layout="@layout/include_top_ads_statistic_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_ads_dashboard_margin_cards"/>

        <include
            android:id="@+id/layout_top_ads_product_group_summary"
            layout="@layout/include_top_ads_product_list_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_ads_dashboard_margin_cards"/>

        <include layout="@layout/include_separator_horizontal"/>

        <include
            android:id="@+id/layout_top_ads_product_item_summary"
            layout="@layout/include_top_ads_product_list_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>