<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.core.customwidget.SwipeToRefresh
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_top_ads_shop_info"/>

            <include
                layout="@layout/include_top_ads_statistic_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_ads_dashboard_margin_cards"/>

            <com.tokopedia.seller.topads.view.widget.TopAdsLabelView
                android:id="@+id/label_view_group_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:content_color="@color/tkpd_main_green"
                app:content="@string/top_ads_statistic_info_default_value"
                app:title="@string/label_top_ads_groups"/>


            <com.tokopedia.seller.topads.view.widget.TopAdsLabelView
                android:id="@+id/label_view_item_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/top_ads_dashboard_margin_bottom_space"
                android:layout_marginTop="@dimen/top_ads_dashboard_margin_cards"
                app:content_color="@color/tkpd_main_green"
                app:content="@string/top_ads_statistic_info_default_value"
                app:title="@string/label_top_ads_items"/>

            <!-- blank space for FAB -->
            <LinearLayout
                android:id="@+id/top_ads_blank_space"
                android:layout_width="match_parent"
                android:layout_height="45.75dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal" />
        </LinearLayout>
    </ScrollView>
</com.tokopedia.core.customwidget.SwipeToRefresh>