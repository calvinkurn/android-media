<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding_detail">

    <TextView
        android:id="@+id/title_sort"
        android:layout_toLeftOf="@+id/image_checklist"
        style="@style/TextView.Body1.BlackSecondary"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/image_checklist"
        android:layout_width="@dimen/image_width_s"
        android:layout_height="@dimen/image_width_s"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_check_green_24dp" />
</RelativeLayout>