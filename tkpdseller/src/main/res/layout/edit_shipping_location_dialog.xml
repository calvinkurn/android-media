<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontm"
        android:textStyle="bold"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:text="@string/title_edit_shop_location"/>

    <TextView
        android:id="@+id/edit_shipping_select_province_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/fontm"
        android:text="@string/title_select_province"/>

    <Spinner
        android:id="@+id/edit_shipping_province_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/edit_shipping_select_city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/fontm"
        android:text="@string/title_select_city"/>

    <Spinner
        android:id="@+id/edit_shipping_city_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/edit_shipping_select_district_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/fontm"
        android:text="@string/title_select_district"/>

    <Spinner
        android:id="@+id/edit_shipping_district_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_shipping_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_plain"
            android:text="@string/title_cancel"/>

        <TextView
            android:id="@+id/edit_shipping_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_plain"
            android:text="@string/title_edit_prod"/>

    </LinearLayout>

</LinearLayout>