<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/market_insight_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaos Raglan"
        android:textColor="#B2000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/market_insight_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="612.019x"
        android:textColor="#61000000"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/zoom_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@id/market_insight_number"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/market_insight_number"
        android:src="@drawable/ic_search_icon"
        />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/market_insight_progress"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@id/market_insight_keyword"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        app:rcBackgroundColor="@color/black_12"
        app:rcBackgroundPadding="2dp"
        app:rcMax="100"
        app:rcProgress="90"
        app:rcProgressColor="#f6b323"
        app:rcRadius="20dp" />
</RelativeLayout>
