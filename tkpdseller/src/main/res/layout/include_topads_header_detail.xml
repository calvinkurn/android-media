    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.seller.topads.view.widget.TopAdsLabelView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:content_color="@color/green_200"
        app:title="@string/label_title_name_topads"/>

    <include layout="@layout/include_separator_horizontal"/>

    <com.tokopedia.seller.topads.view.widget.TopAdsLabelSwitch
