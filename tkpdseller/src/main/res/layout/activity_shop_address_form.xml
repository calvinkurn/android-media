<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.seller.shopsettings.address.activity.ShopAddressForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/padding_small">

        <LinearLayout
            android:id="@+id/mainView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Alamat -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/address_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:hint="@string/title_location_name">

                    <EditText
                        android:id="@+id/address_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title_address_add_address">

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/address_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/error_city_or_district"
                    android:textColor="#ff0000"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- End of alamat -->


            <!-- Detail alamat -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_legacy_edittext_hint"
                    android:layout_marginStart="@dimen/margin_legacy_edittext_hint"
                    android:text="@string/title_city_or_district"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <EditText
                    android:id="@+id/city_or_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/hint_city_or_district"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="@color/grey_hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_legacy_edittext_hint"
                    android:layout_marginStart="@dimen/margin_legacy_edittext_hint"
                    android:text="@string/title_post_code"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/fonts" />

                <EditText
                    android:id="@+id/post_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_post_code"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="@color/grey_hint" />

            </LinearLayout>

            <!-- End of detail alamat -->

            <!-- Contact -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/shop_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:hint="@string/title_email_optional">

                    <EditText
                        android:id="@+id/shop_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/shop_phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:hint="@string/title_phone_optional">

                    <EditText
                        android:id="@+id/shop_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/shop_fax_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:hint="@string/title_fax_optional">

                    <EditText
                        android:id="@+id/shop_fax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_med"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!-- End of contact -->

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/button_buy_from_cart"
                android:gravity="center"
                android:text="@string/title_save"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
