<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/gmstat_padding_item_left_right"
    android:paddingTop="@dimen/gmstat_padding_item_top_transaction"
    android:layout_width="match_parent"
    android:layout_height="162dp">

    <LinearLayout
        android:id="@+id/data_transaction_header_loading"
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.tokopedia.seller.gmstat.library.LoaderImageView
            android:layout_gravity="center_vertical"
            app:use_gradient="true"
            android:id="@+id/data_transaction_header_loading_ic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_icon_transaksi"/>
        <com.tokopedia.seller.gmstat.library.LoaderTextView
            android:layout_gravity="center_vertical"
            app:use_gradient="true"
            android:id="@+id/data_transaction_header_loading_text"
            android:layout_width="93dp"
            android:layout_marginLeft="8dp"
            android:paddingTop="3dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/data_transaction_header_loading"
        android:background="#1E000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_marginTop="8dp"
        android:layout_below="@id/separator_1"
        android:orientation="horizontal"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content">
            <com.tokopedia.seller.gmstat.library.LoaderTextView
                app:use_gradient="true"
                android:id="@+id/buyer_number_header_loading"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="Jumlah Transaksi"
                android:layout_marginBottom="5dp"
                android:textColor="#89000000"
                android:textSize="12sp" />
            <com.tokopedia.seller.gmstat.library.LoaderTextView
                app:use_gradient="true"
                android:id="@+id/transaction_count_loading"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/buyer_number_header_loading"
                android:text="999,9jt"
                android:layout_marginBottom="20dp"
                android:textColor="#B2000000"
                android:textSize="24sp"/>
            <com.tokopedia.seller.gmstat.library.LoaderImageView
                app:use_gradient="true"
                android:layout_width="47dp"
                android:layout_height="10dp"
                android:paddingTop="3dp"
                app:srcCompat="@mipmap/arrow_up_percentage"
                android:layout_below="@+id/transaction_count_loading"
                android:id="@+id/transaction_count_icon_loading" />

        </RelativeLayout>
        <com.tokopedia.seller.gmstat.library.LoaderImageView
            android:layout_marginLeft="8dp"
            app:use_gradient="true"
            android:id="@+id/transaction_chart_loading"
            android:layout_width="0dp"
            android:paddingLeft="33dp"
            android:paddingRight="16dp"
            android:layout_weight="0.7"
            android:layout_height="91.3dp"
            />
        <!--<com.tokopedia.seller.gmstat.views.NChart-->
        <!--android:id="@+id/transaction_chart"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="0.7"-->
        <!--android:layout_height="91.3dp" />-->
    </LinearLayout>


</RelativeLayout>