<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_width_xxxl"
    android:layout_height="@dimen/image_width_xxxl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rect_stroke_lighter_gray"
    android:clickable="true"
    android:focusable="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_200"
        android:layout_margin="@dimen/margin_ms"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageview_picture"
        android:layout_width="@dimen/image_width_l"
        android:layout_height="@dimen/image_width_l"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/margin_ms"
        tools:src="@mipmap/ic_launcher"
        app:tint="@color/grey_400"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_ms"
        android:foreground="@drawable/bg_rect_stroke_gray_dashed" />
</FrameLayout>
