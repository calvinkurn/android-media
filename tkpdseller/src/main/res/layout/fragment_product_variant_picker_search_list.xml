<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_apps"
    android:orientation="vertical">

    <com.tokopedia.design.text.SearchInputView
        android:id="@+id/search_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.design.text.SpinnerTextView
        android:id="@+id/spinner_text_view_variant_unit"
        style="@style/LabelLayout"
        android:layout_height="110dp"
        android:layout_marginBottom="@dimen/margin_med"
        android:visibility="gone" />

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.tokopedia.core.customwidget.SwipeToRefresh>
</LinearLayout>