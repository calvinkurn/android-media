<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar_grey" />

    <TextView
        android:id="@+id/text_view_date_range"
        style="@style/TextView.Subheading.Green"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/topads_arrow_left_margin"
        android:layout_marginRight="@dimen/topads_arrow_left_margin"
        android:layout_weight="1"
        android:gravity="end"
        tools:text="@string/app_name" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/arrow_left"
        android:layout_width="@dimen/topads_arrow_left_width"
        android:layout_height="@dimen/topads_arrow_left_height"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_right" />
</LinearLayout>