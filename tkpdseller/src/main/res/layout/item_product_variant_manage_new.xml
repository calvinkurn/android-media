<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/margin_sm"
    android:layout_marginRight="@dimen/margin_sm"
    android:layout_marginTop="@dimen/padding_vvvs"
    android:layout_marginBottom="@dimen/padding_vvvs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/line_divider"
        android:showDividers="middle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:divider="@drawable/line_divider"
            android:showDividers="middle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_ms"
                android:paddingBottom="@dimen/padding_ms">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/text_view_title"
                        style="@style/TextView.Title.Bold"
                        android:layout_gravity="center_vertical"
                        tools:text="Nama Variant (Merah)" />
                    <TextView
                        android:id="@+id/tv_subtitle"
                        style="@style/TextView.Title"
                        android:layout_gravity="center_vertical"
                        tools:text="0-3 Bulan, 3-6 Bulan, ...."
                        android:maxLines="3"
                        android:ellipsize="end" />
                </LinearLayout>


                <FrameLayout
                    android:id="@+id/frame_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rect_stroke_lighter_gray"
                    android:padding="@dimen/margin_vvs"
                    android:layout_marginRight="@dimen/padding_ms"
                    android:layout_marginLeft="@dimen/padding_ms">

                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="@dimen/image_width_xl"
                        android:layout_height="@dimen/image_width_xl"
                        tools:src="@mipmap/ic_launcher"/>

                    <View
                        android:layout_width="@dimen/image_width_xl"
                        android:layout_height="@dimen/image_width_xl"
                        android:background="@drawable/bg_rect_stroke_gray_dashed" />
                </FrameLayout>

            </LinearLayout>

            <com.tokopedia.design.label.LabelView
                android:id="@+id/label_view_variant_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_ms"
                android:paddingBottom="@dimen/padding_ms"
                app:lv_title_color="@color/colorGray"
                app:lv_title="@string/product_variant_price_label" />

            <com.tokopedia.design.label.LabelView
                android:id="@+id/label_view_variant_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_ms"
                android:paddingBottom="@dimen/padding_ms"
                app:lv_title_color="@color/colorGray"
                app:lv_title="@string/product_variant_stock_total_label" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_see_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            style="@style/TextView.Title"
            android:layout_marginRight="@dimen/padding_ms"
            android:layout_marginLeft="@dimen/padding_ms"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/tkpd_main_green"
            android:text="@string/product_variant_see_detail"
            android:gravity="center_vertical|end"/>
    </LinearLayout>

</android.support.v7.widget.CardView>