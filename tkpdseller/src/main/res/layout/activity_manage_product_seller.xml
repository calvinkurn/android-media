<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_draft_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/tkpd_yellow_status"
        android:clickable="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:textSize="@dimen/fontvs"
        android:foreground="?attr/selectableItemBackground"
        tools:text="@string/product_manage_you_have_x_unfinished_product"/>

    <include layout="@layout/fragment_product_manage" />
</LinearLayout>

