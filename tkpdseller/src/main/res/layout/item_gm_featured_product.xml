<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_detail">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ic_drag_and_drop_gm_featured_product"
        android:layout_width="9dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_group"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ic_gm_featured_product"
        android:layout_width="@dimen/image_add_video_url_width"
        android:layout_height="@dimen/image_add_video_url_width"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toEndOf="@id/ic_drag_and_drop_gm_featured_product"
        android:layout_toRightOf="@id/ic_drag_and_drop_gm_featured_product"
        tools:src="@drawable/ic_badge_official" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ic_gm_featured_product"
        android:layout_toLeftOf="@+id/check_box"
        android:layout_toRightOf="@id/ic_gm_featured_product"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_product_name_gm_featured_product"
            style="@style/TextView.Body2.Black"
            tools:text="Tas selempang wanita bulat merah Good Things by Olympicto bahan Kanvas" />

        <TextView
            android:id="@+id/text_price_gm_featured_product"
            style="@style/TextView.Body2.BlackSecondary"
            android:layout_marginTop="@dimen/margin_small"
            tools:text="Rp. 500" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:theme="@style/checkBoxStyle" />
</RelativeLayout>