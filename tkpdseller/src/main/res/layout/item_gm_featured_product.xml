<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ic_drag_and_drop_gm_featured_product"
        android:layout_width="9dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_group"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ic_gm_featured_product"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/ic_badge_official"
        android:layout_toEndOf="@id/ic_drag_and_drop_gm_featured_product"
        android:layout_toRightOf="@id/ic_drag_and_drop_gm_featured_product"/>

    <LinearLayout
        android:layout_toEndOf="@id/ic_gm_featured_product"
        android:layout_toRightOf="@id/ic_gm_featured_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_product_name_gm_featured_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TextView" />

        <TextView
            android:id="@+id/text_price_gm_featured_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TextView" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/check_box"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/checkBoxStyle"/>
</RelativeLayout>