<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/image_width_s"
                android:layout_height="@dimen/image_width_s"
                android:layout_marginTop="@dimen/margin_med"
                android:src="@drawable/ic_shop_setting_location" />

            <TextView
                style="@style/TextView.TitleBig"
                android:layout_marginTop="@dimen/margin_med"
                android:text="@string/title_shop_setting_location" />

            <TextView
                style="@style/TextView.Title"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_sm"
                android:gravity="center_horizontal"
                android:text="@string/description_shop_setting_location" />
        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_shop_setting_location_district"
            style="@style/TextInputLayout.ShopSetting.DescShop"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:hint="@string/hint_shop_setting_location_city">

            <AutoCompleteTextView
                android:id="@+id/edit_text_shop_setting_location_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_shop_setting_location_zip_code"
            style="@style/TextInputLayout.ShopSetting.DescShop"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:hint="@string/hint_shop_setting_location_zip_code">

            <EditText
                android:id="@+id/edit_text_shop_setting_location_postal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="@dimen/font_title" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/TextView.Micro"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:text="@string/title_shop_setting_location_pickup" />

        <TextView
            style="@style/TextView.Micro"
            android:layout_marginBottom="@dimen/margin_med"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/description_shop_setting_location_pickup" />

        <include layout="@layout/partial_separator_horizontal" />

        <LinearLayout
            android:id="@+id/action_shop_setting_location_pickup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_med"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_shop_setting_location_pickup"
                style="@style/TextView.Small"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/action_shop_setting_location_pickup" />

            <ImageView
                android:id="@+id/ic_shop_setting_location_pickup"
                android:layout_width="@dimen/image_width_m"
                android:layout_height="@dimen/image_width_m"
                android:src="@drawable/icon_bca" />

        </LinearLayout>

        <include layout="@layout/partial_separator_horizontal" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/shop_desc_input_layout"
            style="@style/TextInputLayout.ShopSetting.DescShop"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginRight="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_sm">

            <EditText
                android:id="@+id/edit_text_pickup_address"
                style="@style/EditText.ShopSetting"
                android:hint="@string/title_shop_setting_location_address" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/continue_button"
            style="@style/Button.Submit.Green"
            android:layout_marginTop="@dimen/margin_sm"
            android:text="@string/title_next" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
