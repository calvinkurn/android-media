<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/tkpd_bg_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_vs"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_error_network"/>

    <TextView
        android:id="@+id/text_view_empty_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        tools:text="@string/top_ads_empty_group_promo_text"/>

    <TextView
        android:id="@+id/text_view_empty_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        tools:text="@string/top_ads_empty_group_promo_content_empty_text"
        android:textColor="@color/grey_400"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_empty_content_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_med"
        android:gravity="center"
        tools:text="@string/top_ads_empty_group_promo_content_item_no_text"
        android:textColor="@color/tkpd_main_green"
        android:textStyle="bold"/>

</LinearLayout>
