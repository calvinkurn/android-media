<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_vs"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_top_ads_keyword_empty"/>

    <TextView
        android:id="@+id/text_view_empty_title_text"
        style="@style/TextView.TopAds.Body.Black"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:textSize="@dimen/font_medium"
        tools:text="@string/top_ads_empty_group_title_promo_text"/>

    <TextView
        android:id="@+id/text_view_empty_content_text"
        style="@style/TextView.TopAds.Body.Gray"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:maxLines="4"
        tools:text="@string/top_ads_empty_group_promo_content_text"/>

    <TextView
        android:id="@+id/text_view_empty_content_item_text"
        style="@style/TextView.TopAds.Body.Green"
        android:layout_margin="@dimen/margin_med"
        android:visibility="gone"
        tools:text="@string/top_ads_empty_group_promo_content_item_no_text"/>

    <!-- text will be override programmatically -->
    <Button
        android:id="@+id/button_add_promo"
        style="@style/Button.Submit.Green"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/menu_top_ads_add_promo_group"/>

</LinearLayout>
