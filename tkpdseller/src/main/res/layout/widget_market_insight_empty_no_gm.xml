<?xml version="1.0" encoding="utf-8"?>
<!-- change the height 250dp, we also have to change height of market_insight_card_view -->
<LinearLayout android:id="@+id/market_insight_non_gold_merchant"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#CD000000"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="visible"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="27dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_lock_icon_again"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_access_to_see_gm_stat"
            android:textSize="14sp"
            android:textColor="#80ffffff"
            android:textAlignment="center"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/move_to_gmsubscribe_market_insight"
        android:layout_width="244dp"
        android:layout_height="52dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rounded_corner">
        <TextView
            android:id="@+id/market_insight_gmsubscribe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upgrade_to_gold_merchant"
            android:textColor="@color/colorGreen"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</LinearLayout>
