<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="middle"
    android:divider="@drawable/line_separator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.tokopedia.seller.lib.widget.LabelView
        android:id="@+id/title_price_and_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/label_topads_price_and_schedule"
        app:title_textStyle="bold"/>

    <include layout="@layout/include_topads_context_max_price_detail" />

    <com.tokopedia.seller.lib.widget.LabelView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:content_small="true"
        app:title="@string/label_top_ads_start"/>

    <com.tokopedia.seller.lib.widget.LabelView
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:content_small="true"
        app:title="@string/label_top_ads_end"/>

    <com.tokopedia.seller.lib.widget.LabelView
        android:id="@+id/daily_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:content_small="true"
        app:title="@string/label_top_ads_daily_budget"/>

    <include layout="@layout/include_topads_content_statistic_detail" />
</LinearLayout>