<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/popular_product_empty_state"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:background="#f9f9f9"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="113dp"
        android:layout_height="54dp"
        android:src="@drawable/icon_g_m_seller_app_produk_empty_03_04"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="@string/no_product_data_in_this_period"
        android:textColor="#61000000"
        android:gravity="center" />

    <TextView
        android:id="@+id/add_product_popular_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#42b549"
        android:padding="8dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="13dp"
        android:text="@string/plus_add_product"
        android:textSize="14sp"/>

</LinearLayout>