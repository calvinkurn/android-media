<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LabelLayout"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/title_text_view"
        style="@style/TextView.Subheading"
        android:layout_gravity="center_vertical|start"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="@string/app_name" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginLeft="@dimen/margin_vs">

        <TextView
            android:id="@+id/content_text_view"
            style="@style/TextView.Subheading.BlackSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrow_left"
            android:layout_toStartOf="@+id/arrow_left"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            tools:text="@string/app_name" />

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="@dimen/topads_arrow_left_width"
            android:layout_height="@dimen/topads_arrow_left_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/topads_arrow_left_margin"
            android:layout_marginStart="@dimen/topads_arrow_left_margin"
            android:src="@drawable/ic_arrow_right"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>