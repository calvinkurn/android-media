<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/gmstat_padding_item_left_right"
    android:paddingTop="@dimen/gmstat_padding_item_top_transaction"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/buyer_data_header_loading"
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.tokopedia.seller.gmstat.library.LoaderImageView
            app:use_gradient="true"
            android:id="@+id/buyer_data_header_ic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_icon_pembeli"/>
        <com.tokopedia.seller.gmstat.library.LoaderTextView
            app:use_gradient="true"
            android:id="@+id/buyer_data_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:paddingTop="3dp"
            app:width_weight="0.3"
            android:textColor="#ff5722"
            android:text="DATA PEMBELI"/>
    </LinearLayout>

    <View
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/buyer_data_header_loading"
        android:background="#1E000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_marginTop="8dp"
        android:layout_below="@id/separator_1"
        android:orientation="horizontal"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content">
            <com.tokopedia.seller.gmstat.library.LoaderTextView
                app:use_gradient="true"
                android:id="@+id/buyer_number_header_loading"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#89000000"
                android:textSize="12sp"/>
            <com.tokopedia.seller.gmstat.library.LoaderTextView
                app:use_gradient="true"
                android:id="@+id/buyer_count_loading"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="999,9jt"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/buyer_number_header_loading"
                android:textColor="#B2000000"
                android:textSize="24sp"/>
            <com.tokopedia.seller.gmstat.library.LoaderImageView
                app:use_gradient="true"
                android:layout_width="47dp"
                android:layout_height="12dp"
                android:paddingTop="3dp"
                android:scaleType="fitXY"
                android:src="@mipmap/arrow_up_percentage"
                android:layout_below="@+id/buyer_count_loading"
                android:id="@+id/buyer_count_icon_loading" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:id="@+id/data_buyer_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            >
            <com.tokopedia.seller.gmstat.library.LoaderImageView
                app:use_gradient="true"
                android:id="@+id/data_buyer_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"/>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>