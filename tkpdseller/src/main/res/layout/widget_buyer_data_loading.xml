<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@id/separator_1"
    android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
    android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="vertical">
        <com.tokopedia.seller.gmstat.library.LoaderView
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_marginBottom="5dp"
            app:use_gradient="true"/>
        <com.tokopedia.seller.gmstat.library.LoaderView
            android:layout_width="125dp"
            android:layout_height="25dp"
            android:layout_marginBottom="20dp"
            app:use_gradient="true"/>
        <com.tokopedia.seller.gmstat.library.LoaderView
            android:layout_width="50dp"
            android:layout_height="15dp"
            app:use_gradient="true"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/data_buyer_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.tokopedia.seller.gmstat.views.circleprogress.DonutProgress
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            app:donut_finished_color="#cecece"
            app:donut_finished_stroke_width="4dp"
            app:donut_max="100"
            app:donut_unfinished_color="#cecece"
            app:donut_unfinished_stroke_width="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <com.tokopedia.seller.gmstat.library.LoaderView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"/>
            <com.tokopedia.seller.gmstat.library.LoaderView
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"/>

            <com.tokopedia.seller.gmstat.library.LoaderView
                android:layout_width="60dp"
                android:layout_height="15dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>