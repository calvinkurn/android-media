<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="LinearLayout">

    <LinearLayout
        style="@style/LabelLayout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.Small.BlackSecondary"
            android:text="@string/product_label_product_delivery" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_group_product_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line_divider"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <com.tokopedia.design.text.SpinnerCounterInputView
            android:id="@+id/spinner_counter_input_view_weight"
            style="@style/LabelLayout"
            app:spinner_decimal_entries="@array/product_weight_entries"
            app:spinner_decimal_hint="@string/product_label_product_weight"
            app:spinner_decimal_show_counter_button="false"
            app:spinner_decimal_values="@array/product_weight_values" />

        <com.tokopedia.design.text.SpinnerTextView
            android:id="@+id/spinner_text_view_insurance"
            style="@style/LabelLayout"
            app:spinner_entries="@array/product_insurance_entries"
            app:spinner_hint="@string/product_label_insurance"
            app:spinner_values="@array/product_insurance_values" />

        <com.tokopedia.seller.common.widget.LabelSwitch
            android:id="@+id/label_switch_free_return"
            style="@style/LabelLayout"
            android:visibility="gone"
            app:ls_title="@string/product_label_free_returns"
            tools:visibility="visible" />

    </LinearLayout>

    <com.tokopedia.seller.common.widget.LabelSwitch
        android:id="@+id/label_switch_share"
        style="@style/LabelLayout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:ls_title="@string/product_label_share" />

</merge>