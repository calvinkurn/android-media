<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.seller.opportunity.OppurtunityDetailButtonView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/customview_oppurtunity_detail_button_view"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/customview_oppurtunity_detail_button_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.seller.opportunity.OppurtunityDetailStatusView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customview_oppurtunity_detail_status_view"
                />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>