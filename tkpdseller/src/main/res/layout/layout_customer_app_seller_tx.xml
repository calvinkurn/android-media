<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:theme="@style/Toolbar.White"
            app:contentInsetLeft="@dimen/dp_0"
            app:contentInsetStart="@dimen/dp_0"
            app:contentInsetStartWithNavigation="@dimen/dp_0"
            app:subtitleTextAppearance="@style/SubTitleTextAppearance"
            app:titleTextAppearance="@style/TitleTextAppearance"/>

        <com.tokopedia.design.component.Tabs
            android:id="@+id/indicator"
            app:tabBackground="@color/white"
            app:tabTextAppearance="@style/Tabs.Secondary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            app:tabType="secondary"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/bg_yellow"
        android:fadeScrollbars="false"
        android:maxLines="3"
        android:padding="@dimen/dp_10"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <com.tokopedia.abstraction.base.view.widget.TouchViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>