<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/selectable_white_background"
    android:orientation="horizontal"
    android:padding="10dp"
    android:baselineAligned="false"
    android:clipChildren="false"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="@dimen/img_thumb_holder"
        android:layout_height="@dimen/img_thumb_holder"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/img_thumb_l"
            android:layout_height="@dimen/img_thumb_l"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_image_unavailable" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".80"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Nama Produk"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_completion_percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            tools:text="38% complete"
            android:textColor="@color/label_color"
            android:textSize="@dimen/fontvs" />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progress_value_completion"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:rcBackgroundColor="@color/black_twenty_five_percent"
            app:rcMax="100"
            app:rcProgress="0"
            app:rcProgressColor="@color/tkpd_main_green"
            app:rcRadius="6.5dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/vg_trash_can"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginStart="@dimen/margin_vs"
        android:layout_weight=".15"
        android:padding="@dimen/padding_vs"
        android:background="@drawable/selectable_white_background"
        android:clickable="true">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_trash_can"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_trash_can"/>
    </FrameLayout>
</LinearLayout>