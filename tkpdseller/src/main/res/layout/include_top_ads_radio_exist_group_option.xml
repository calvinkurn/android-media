<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.seller.topads.view.widget.TopAdsRadioExpandView
        android:id="@+id/view_radio_choose_group"
        app:radio_id="@+id/radio_promo_choose_group"
        app:title_radio="@string/label_top_ads_create_promo_from_exist_group"
        style="@style/TopAdsRadioExpandView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_choose_group"
                style="@style/TextInputLayout">

                <com.tokopedia.seller.topads.view.widget.TopAdsCustomAutoCompleteTextView
                    android:id="@+id/choose_group_auto_text"
                    android:hint="@string/label_top_ads_choose_group"
                    style="@style/TopAdsCustomAutoCompleteTextView" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/view_info_radio_choose_group"
                style="@style/TextView.infoInputType"/>
        </LinearLayout>
    </com.tokopedia.seller.topads.view.widget.TopAdsRadioExpandView>

</merge>