<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:padding="@dimen/gmstat_padding_item_left_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.seller.gmstat.library.LoaderTextView
        android:text="Pendapatan Kotor"
        android:textSize="12sp"
        android:textColor="#89000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grossIncomeHeader"
        app:use_gradient="true"
        app:width_weight= "0.3"
        android:layout_marginBottom="@dimen/gmstat_margin_bottom"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text" />

    <com.tokopedia.seller.gmstat.library.LoaderTextView
        android:text="Rp 999,9jt"
        android:layout_width="match_parent"
        app:width_weight= "0.5"
        android:layout_height="wrap_content"
        android:textSize="33sp"
        app:use_gradient="true"
        android:textColor="#B2000000"
        android:layout_marginBottom="@dimen/gmstat_margin_bottom_double"
        android:layout_below="@id/grossIncomeHeader"
        android:id="@+id/text" />

    <com.tokopedia.seller.gmstat.library.LoaderImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/circle_green"
        android:id="@+id/dot"
        app:use_gradient="true"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_below="@+id/text" />

    <com.tokopedia.seller.gmstat.library.LoaderTextView
        android:layout_alignBottom="@id/dot"
        android:text="26 Jul 2016 - 25 Des 2016"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textDescription"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@id/dot"
        android:layout_marginLeft="6dp"
        android:textSize="12sp"
        app:use_gradient="true"
        app:width_weight= "0.3"
        android:layout_marginTop="6dp"/>

</RelativeLayout>