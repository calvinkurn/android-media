<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_gmstat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gmstat.views.GMStatActivityFragment"
    tools:showIn="@layout/activity_gmstat">

    <LinearLayout
        android:id="@+id/parent_fragment_gmstat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/header_gmstat"
            layout="@layout/widget_header_gmstat"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gmstat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/chart_container"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/gmstat_padding_item_left_right"
            android:paddingLeft="@dimen/gmstat_padding_item_left_right"
            android:paddingRight="@dimen/gmstat_padding_item_left_right">

            <HorizontalScrollView
                android:id="@+id/gross_income_graph_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/gross_income_graph_container2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.tokopedia.seller.lib.williamchart.view.LineChartView
                        android:id="@+id/gross_income_graph2"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        />
                </LinearLayout>
            </HorizontalScrollView>

            <com.tokopedia.seller.gmstat.library.LoaderImageView
                android:id="@+id/gross_income_graph2_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                app:use_gradient="true"
                />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/popular_product_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chart_container"
            android:layout_margin="@dimen/gmstat_margin_bottom"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom">
            <include
                android:id="@+id/popular_product"
                layout="@layout/widget_popular_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <include
                android:id="@+id/popular_product_loading"
                layout="@layout/popular_product_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/transaction_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popular_product_container"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom"
            android:layout_marginLeft="@dimen/gmstat_margin_bottom"
            android:layout_marginRight="@dimen/gmstat_margin_bottom"
            >

            <include
                android:id="@+id/transaction_data"
                layout="@layout/widget_transaction_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/transaction_data_loading"
                layout="@layout/widget_transaction_data_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/buyer_data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom"
            android:layout_marginLeft="@dimen/gmstat_margin_bottom"
            android:layout_marginRight="@dimen/gmstat_margin_bottom">

            <include
                android:id="@+id/buyer_data"
                layout="@layout/widget_buyer_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/buyer_data_loading"
                layout="@layout/widget_buyer_data_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        </android.support.v7.widget.CardView>

        <com.tokopedia.seller.gmstat.views.widget.TitleCardView
            android:id="@+id/market_insight_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gmstat_margin_bottom"
            android:layout_marginLeft="@dimen/gmstat_margin_bottom"
            android:layout_marginRight="@dimen/gmstat_margin_bottom"
            app:title_size="@dimen/font_body1"
            app:title="@string/market_insight"
            app:icon="@drawable/ic_wawasan_pasar_icon"
            app:loading_layout="@layout/widget_market_insight_loading">

            <include layout="@layout/widget_market_insight_content" />

        </com.tokopedia.seller.gmstat.views.widget.TitleCardView>
    </LinearLayout>
</ScrollView>
