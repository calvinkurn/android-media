<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.seller.common.widget.LabelSwitch
        android:id="@+id/label_switch_product_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ls_title="@string/product_variant_status"
        app:ls_title_text_size="@dimen/font_micro"
        app:ls_title_color="@color/font_black_secondary_54"
        app:ls_content_text_size="@dimen/font_title"
        app:ls_content_color="@color/font_black_primary_70"
        style="@style/LabelLayout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bg_line_separator"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false" />
    </FrameLayout>

    <Button
        android:id="@+id/button_save"
        style="@style/Button.Submit.Green"
        android:text="@string/label_variant_save"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
</LinearLayout>