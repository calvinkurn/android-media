<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LabelLayoutWithoutBorder"
        android:layout_marginTop="@dimen/product_margin_cards"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_description"
            style="@style/TextInputLayout"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/product_max_character_description">

            <EditText
                android:id="@+id/edit_text_description"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:hint="@string/product_label_product_description" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</LinearLayout>