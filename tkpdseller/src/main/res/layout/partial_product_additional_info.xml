<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LabelLayout"
        android:layout_marginTop="@dimen/product_margin_cards"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_description"
            style="@style/TextInputLayout"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/product_max_character_description">

            <EditText
                android:id="@+id/edit_text_description"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:hint="@string/product_label_product_description"
                android:inputType="textMultiLine"
                android:maxLength="@integer/product_max_character_description" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <com.tokopedia.seller.common.widget.LabelView
        android:id="@+id/label_add_video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/product_margin_cards"
        android:visibility="gone"
        app:content="@string/product_etalase_picker_add_etalase_add_button_dialog"
        app:content_color="@color/tkpd_main_green"
        app:label_show_arrow="true"
        app:title="@string/product_label_video" />

    <com.tokopedia.seller.common.widget.LabelView
        android:id="@+id/label_view_variant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/product_margin_cards"
        android:visibility="gone"
        app:content="@string/product_label_choose"
        app:content_color="@color/tkpd_main_green"
        app:label_show_arrow="true"
        app:content_max_lines="5"
        app:title="@string/product_variant_label_title" />

    <com.tokopedia.expandable.ExpandableOptionSwitch
        android:id="@+id/expandable_option_switch_pre_order"
        style="@style/LabelLayout"
        android:layout_marginTop="@dimen/product_margin_cards"
        app:eo_checked="false"
        app:eo_theme="@style/ExpandableStyle"
        app:eo_title="@string/product_label_preorder">

        <com.tokopedia.design.text.SpinnerCounterInputView
            android:id="@+id/spinner_counter_input_view_pre_order"
            style="@style/LabelLayout.InnerExpandable"
            app:spinner_decimal_entries="@array/product_pre_order_entries"
            app:spinner_decimal_hint="@string/product_label_time_process"
            app:spinner_decimal_spinner_width="100dp"
            app:spinner_decimal_values="@array/product_pre_order_values" />

    </com.tokopedia.expandable.ExpandableOptionSwitch>

    <com.tokopedia.seller.common.widget.LabelSwitch
        android:id="@+id/label_switch_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/product_margin_cards"
        style="@style/LabelLayout"
        app:title="@string/product_label_share" />
</LinearLayout>