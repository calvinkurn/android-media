<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout style="@style/LabelLayoutWithoutBorder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_word"
                style="@style/TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/edit_text_word"
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:hint="@string/top_ads_keyword_add"
                    android:inputType="text"
                    android:maxLength="@integer/keyword_max_length"
                    android:maxLines="1"
                    android:digits="abcdefghijklmnopqrstuvwxyz 0123456789"
                    android:imeOptions="actionDone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/button_add_keyword"
                android:scaleType="fitCenter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/selector_ic_add"
                android:layout_marginTop="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_gravity="top"/>
        </LinearLayout>

        <com.tokopedia.seller.topads.keyword.view.widget.KeywordRecyclerView
            android:id="@+id/keyword_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout style="@style/LabelLayoutWithoutBorder"
        android:orientation="vertical"
        android:clickable="false"
        android:layout_marginTop="@dimen/product_margin_cards">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_keyword_current_and_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/top_ads_keywords_total_current_and_max"
            android:textColor="@color/black_seventy_percent"
            android:textSize="14sp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_keyword_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/top_ads_keywords_in_groups"
            android:textColor="@color/thirty_eight_percent_black"
            android:textSize="@dimen/fontvs"
            android:layout_marginBottom="@dimen/margin_ms"/>
        <Button
            android:id="@+id/button_save"
            style="@style/Button.Submit.Green"
            android:layout_width="match_parent"
            android:layout_margin="0dp"
            android:text="@string/top_ads_keyword_save" />
    </LinearLayout>

</LinearLayout>