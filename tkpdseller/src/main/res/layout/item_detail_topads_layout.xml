<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LabelLayout"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_weight="0.3"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/font_top_ads_black_70"
        android:textSize="16sp"
        tools:text="@string/app_name"/>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/title_text_view"
        android:gravity="right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/content_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/arrow_left"
            android:layout_toLeftOf="@+id/arrow_left"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

        <ImageView
            android:layout_marginStart="@dimen/topads_arrow_left_margin"
            android:layout_marginLeft="@dimen/topads_arrow_left_margin"
            android:visibility="gone"
            android:id="@+id/arrow_left"
            android:layout_width="@dimen/topads_arrow_left_width"
            android:layout_height="@dimen/topads_arrow_left_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"/>
    </RelativeLayout>

</RelativeLayout>