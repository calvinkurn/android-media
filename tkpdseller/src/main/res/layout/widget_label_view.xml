<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LabelLayout"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title_text_view"
        style="@style/TextView.Subheading"
        android:maxLines="1"
        android:minWidth="@dimen/lv_min_title_width"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/content_text_view"
        style="@style/TextView.Subheading.BlackSecondary"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginRight="@dimen/margin_ms"
        android:layout_weight="1"
        android:gravity="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        tools:text="@string/app_id" />

    <ImageView
        android:id="@+id/arrow_left"
        android:layout_width="@dimen/image_width_xxxs"
        android:layout_height="@dimen/image_width_xxs"
        android:layout_gravity="center_vertical|end"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:src="@drawable/ic_arrow_right"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>