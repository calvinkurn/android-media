<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/gmstat_margin_cardview"
    android:layout_marginLeft="@dimen/gmstat_margin_cardview"
    android:layout_marginRight="@dimen/gmstat_margin_cardview"
    android:layout_marginBottom="@dimen/gmstat_margin_bottom"
    app:contentPaddingLeft="@dimen/gmstat_padding_item_left_right"
    app:contentPaddingRight="@dimen/gmstat_padding_item_left_right"
    app:cardCornerRadius="0dp"
    android:layout_height="@dimen/gmstat_height_header_date">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.seller.gmstat.library.LoaderImageView
            android:layout_alignParentLeft="true"
            android:layout_width="19.5dp"
            android:layout_height="19.5dp"
            android:layout_centerVertical="true"
            android:id="@+id/calendar_icon"
            app:use_gradient="true"/>

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/calendar_icon"
            android:layout_alignParentRight="true">
            <com.tokopedia.seller.gmstat.library.LoaderTextView
                android:gravity="right"
                android:id="@+id/calendar_range"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#42b549"
                android:text="26 Jul 2016 - 25 Des 2016"
                app:use_gradient="true"
                app:width_weight="0.6"
                app:gravity="right"
                android:layout_width="match_parent"
                android:layout_weight="0.9"/>
            <com.tokopedia.seller.gmstat.library.LoaderImageView
                android:layout_marginLeft="6dp"
                android:id="@+id/calendar_arrow_icon"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                app:use_gradient="true"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>