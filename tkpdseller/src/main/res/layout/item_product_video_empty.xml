<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="195dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_med"
        android:layout_marginTop="@dimen/margin_vs"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/empty_video" />

    <TextView
        android:id="@+id/text_view_empty_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/product_add_till_three_product_video"
        android:textColor="#60000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_empty_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:maxLines="3"
        android:text="@string/product_add_till_three_product_video_description"
        android:textColor="#60000000"
        android:textSize="12sp" />

    <Button
        android:id="@+id/text_add_url_video"
        style="@style/Button.Submit.Green"
        android:layout_marginTop="32dp"
        android:text="@string/product_add_url_video" />

</LinearLayout>
