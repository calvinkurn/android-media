<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.design.loading.LoadingStateView
            android:id="@+id/loading_state_view_success_transaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:lsv_loading_layout="@layout/partial_gm_statistic_loading_state">

            <com.tokopedia.gm.statistic.view.widget.GmStatisticSummaryView
                android:id="@+id/summary_view_success_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:gm_statistic_summary_content="@string/label_empty_value"
                app:gm_statistic_summary_title="@string/gm_statistic_title_transaction_success" />

        </com.tokopedia.design.loading.LoadingStateView>

        <include layout="@layout/partial_separator_vertical" />

        <com.tokopedia.design.loading.LoadingStateView
            android:id="@+id/loading_state_view_conversion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:lsv_loading_layout="@layout/partial_gm_statistic_loading_state">

            <com.tokopedia.gm.statistic.view.widget.GmStatisticSummaryView
                android:id="@+id/summary_view_conversion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:gm_statistic_summary_content="@string/label_empty_value"
                app:gm_statistic_summary_title="@string/gm_statistic_title_conversion_rate" />
        </com.tokopedia.design.loading.LoadingStateView>

    </LinearLayout>

    <include layout="@layout/partial_separator_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.design.loading.LoadingStateView
            android:id="@+id/loading_state_view_product_seen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:lsv_loading_layout="@layout/partial_gm_statistic_loading_state">

            <com.tokopedia.gm.statistic.view.widget.GmStatisticSummaryView
                android:id="@+id/summary_view_product_seen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:gm_statistic_summary_content="@string/label_empty_value"
                app:gm_statistic_summary_title="@string/gm_statistic_title_product_seen" />
        </com.tokopedia.design.loading.LoadingStateView>

        <include layout="@layout/partial_separator_vertical" />

        <com.tokopedia.design.loading.LoadingStateView
            android:id="@+id/loading_state_view_product_sold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:lsv_loading_layout="@layout/partial_gm_statistic_loading_state">

            <com.tokopedia.gm.statistic.view.widget.GmStatisticSummaryView
                android:id="@+id/summary_view_product_sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:gm_statistic_summary_content="@string/label_empty_value"
                app:gm_statistic_summary_title="@string/gm_statistic_title_product_sold" />
        </com.tokopedia.design.loading.LoadingStateView>
    </LinearLayout>

</LinearLayout>