<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/TextView.Body1.BlackSecondary"
        android:text="@string/label_top_ads_show_time"/>

    <RadioGroup
        android:id="@+id/radio_group_show_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_show_time_automatic"
            style="@style/RadioButton"
            android:checked="true"
            android:text="@string/label_top_ads_show_time_automatic"/>

        <RadioButton
            android:id="@+id/radio_button_show_time_configured"
            style="@style/RadioButton"
            android:text="@string/label_top_ads_show_time_configured"/>

        <LinearLayout
            android:id="@+id/layout_show_time_configured"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_small">

                <com.tokopedia.seller.common.datepicker.view.widget.DatePickerLabelView
                    android:id="@+id/date_picker_show_time_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:date_picker_title="@string/label_top_ads_show_time_start"/>

                <com.tokopedia.seller.common.datepicker.view.widget.DatePickerLabelView
                    android:id="@+id/date_picker_show_time_start_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.tokopedia.seller.common.datepicker.view.widget.DatePickerLabelView
                    android:id="@+id/date_picker_show_time_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:date_picker_title="@string/label_top_ads_show_time_end"/>

                <com.tokopedia.seller.common.datepicker.view.widget.DatePickerLabelView
                    android:id="@+id/date_picker_show_time_end_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </RadioGroup>
</LinearLayout>