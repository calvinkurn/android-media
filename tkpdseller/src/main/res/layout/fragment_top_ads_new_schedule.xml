<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_submit"
        android:padding="@dimen/padding_med">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_text"
                style="@style/TextView.Headline.BlackSecondary"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/top_ads_label_schedule" />

            <include
                layout="@layout/partial_top_ads_edit_promo_show_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_submit"
        style="@style/Button.Submit.Green"
        android:layout_alignParentBottom="true"
        android:text="@string/label_top_ads_next" />
</RelativeLayout>