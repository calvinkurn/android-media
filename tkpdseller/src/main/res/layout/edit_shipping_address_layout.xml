<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shop_phone_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt_phone"
        android:textColor="@color/label_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/shop_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_phone_number_title"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/fontl"
        android:visibility="gone" />

    <TextView
        android:id="@+id/change_phone_number_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/shop_phone_number_title"
        android:layout_toEndOf="@id/shop_phone_number"
        android:layout_toRightOf="@id/shop_phone_number"
        android:gravity="end"
        android:text="@string/action_edit"
        android:textColor="@color/green_500"
        android:textSize="@dimen/fontm"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/location_field_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_phone_number"
        android:text="@string/title_delivery_location"
        android:textColor="@color/label_color"
        android:layout_marginStart="@dimen/dp_5"
        android:textSize="@dimen/fonts" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/address_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/location_field_title"
        android:layout_below="@id/location_field_title"
        android:layout_marginTop="@dimen/dp_10"
        android:hint="@string/title_activity_shop_address_form">
        <EditText
            android:id="@+id/address_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <include
        layout="@layout/open_map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/location_field_title"
        android:layout_below="@id/address_text_input_layout" />
</RelativeLayout>