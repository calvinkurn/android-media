<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_product_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:padding="@dimen/new_margin_small">
        
        <!-- Ini untuk nama produk dan kategory -->
        <LinearLayout
            android:id="@+id/add_product_nama_produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/new_margin_small"
            >

            <ViewStub
                android:id="@+id/add_product_copy"
                android:inflatedId="@+id/add_product_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/add_product_copy"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/add_product_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/new_margin_med"
                android:layout_below="@+id/add_product_copy"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/new_margin_med">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_product_name_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="false"
                    android:layout_marginBottom="@dimen/new_margin_small">
                    <EditText
                        android:id="@+id/add_product_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_product_name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/new_text_size_input" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_category"
                    android:textSize="@dimen/new_text_size_small"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/add_product_category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    />

                <View
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="@dimen/new_margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:id="@+id/add_product_catalog_layout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/new_margin_small"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/add_product_prompt_catalog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_catalog"
                        android:textColor="@color/label_color"
                        android:layout_marginLeft="3dp"
                        android:textSize="@dimen/new_text_size_small" />


                    <com.tokopedia.seller.myproduct.adapter.ClickToSelectWithImage
                        android:id="@+id/add_product_catalog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/new_text_size_input"
                        />

                </LinearLayout>

                <!-- [START] ini akhir dari product description -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_product_desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:errorEnabled="false">
                    <com.tkpd.library.ui.widget.LimitedEditText
                        android:id="@+id/add_product_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_desc"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:scrollbars="vertical"
                        android:textSize="@dimen/new_text_size_input"
                        />
                    <!--android:textSize="@dimen/fonts"-->
                </android.support.design.widget.TextInputLayout>
                <!-- [END] ini akhir dari product description -->

            </LinearLayout>
        </LinearLayout>






        <include
            android:id="@+id/include_preorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/product_preorder"
            android:layout_below="@+id/add_product_nama_produk"
            android:layout_marginBottom="@dimen/new_margin_small"/>




            <!-- ini untuk harga, berat dan order minimal-->
        <LinearLayout
            android:id="@+id/add_product_harga_berat_kategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/new_margin_small"
            android:background="@drawable/cards_ui_2"
            android:layout_below="@+id/include_preorder"
            android:orientation="vertical"
            android:padding="@dimen/new_margin_med" >

            <!-- Ini untuk Harga-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.5">

                    <com.tkpd.library.ui.widget.ClickToSelectEditText
                        android:id="@+id/add_product_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/new_text_size_input"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_price_alert"
                    android:layout_width="0dp"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">
                    <!--
                    app:errorEnabled="false"
                    android:paddingTop="10dp"-->
                    <EditText
                        android:id="@+id/add_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/prompt_price"
                        android:textSize="@dimen/new_text_size_input"
                         />
                    <!--
                     android:ems="10"
                    android:textSize="@dimen/fonts" -->
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <!-- Ini untuk Berat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <com.tkpd.library.ui.widget.ClickToSelectEditText
                        android:id="@+id/add_product_weight_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/new_text_size_input"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_weight_alert"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/add_product_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/prompt_weight"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/new_text_size_input"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <!-- Ini untuk Order minimal -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_product_minimum_order_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="false"
                android:layout_gravity="top">
                <EditText
                    android:id="@+id/add_product_minimum_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_min_order"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textSize="@dimen/new_text_size_input"
                     />
                <!--android:textSize="@dimen/fonts"-->
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <!-- ini untuk header whole sale ketika dipencet muncul item yang diperlukan -->
        <LinearLayout
            android:id="@+id/add_product_wrapper_wholesale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/new_margin_small"
            android:background="@drawable/btn_cancel"
            android:layout_below="@+id/add_product_harga_berat_kategory"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <RelativeLayout
                android:id="@+id/add_product_tittle_wholesale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_white_background"
                android:padding="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/prompt_wholesale"
                    android:textColor="@color/label_color"
                    android:textSize="@dimen/new_text_size_title" />

                <ImageView
                    android:id="@+id/add_product_imagechveron"
                    android:layout_width="@dimen/med_dp"
                    android:layout_height="@dimen/med_dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_down" />

            </RelativeLayout>

            <!-- ini ditampilkan ketika verifikasi harga normal sudah -->
            <com.tkpd.library.ui.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/add_product_wholesale_container"
                android:layout_width="match_parent"
                android:layout_height="201.33dp"
                app:ael_duration="500"
                app:ael_interpolator="bounce"
                app:ael_orientation="vertical">

                <com.tokopedia.seller.myproduct.customview.wholesale.WholesaleLayout
                    android:id="@+id/add_product_wholesale_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.tkpd.library.ui.expandablelayout.ExpandableRelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_product_etalase_dll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_product_wrapper_wholesale"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/new_margin_small"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:padding="@dimen/new_margin_med">

            <!-- [START] ini menambahkan ke etalase atau gudang atau etalase baru -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/new_margin_med"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_add_to"
                    android:textSize="@dimen/new_text_size_small"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/add_product_add_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <com.tkpd.library.ui.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/add_product_add_to_new_etalase_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ael_duration="500"
                    app:ael_interpolator="bounce"
                    app:ael_orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/add_product_add_to_new_etalase_alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/add_product_add_to_new_etalase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_etalase_name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="@dimen/new_text_size_input" />
                    </android.support.design.widget.TextInputLayout>
                </com.tkpd.library.ui.expandablelayout.ExpandableRelativeLayout>
            </LinearLayout>

            <!-- [START] ini terima pengembalian, asuransi dan kondisi -->
            <LinearLayout
                android:id="@+id/add_product_pengembalian_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_product_etalase_dll_layout"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_product_prompt_condition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_condition"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/new_text_size_small"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/add_product_prompt_insurance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_insurance"
                        android:textColor="@color/label_color"
                        android:textSize="@dimen/new_text_size_small"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/add_product_condition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/add_product_insurance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_product_errorCondition"
                        android:layout_width="@dimen/half_screen_2pad"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="#ff0000" />

                    <TextView
                        android:id="@+id/add_product_errorInsurance"
                        android:layout_width="@dimen/half_screen_2pad"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="#ff0000" />
                </LinearLayout>

            </LinearLayout>


            </LinearLayout>
            <!-- [END] ini menambahkan ke etalase atau gudang atau etalase baru -->

        <!-- [START] ini layout dari share facebook -->

        <ViewStub
            android:id="@+id/add_product_share"
            android:inflatedId="@id/add_product_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_product_etalase_dll_layout"
            android:layout="@layout/add_product_share"
            />

        <ViewStub
            android:id="@+id/add_product_submit_ll"
            android:inflatedId="@+id/add_product_submit_ll"
            android:layout="@layout/add_product_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_product_share"/>

        <ViewStub
            android:id="@+id/add_product_soc_med_submit_ll"
            android:inflatedId="@+id/add_product_soc_med_submit_ll"
            android:layout="@layout/add_product_soc_med_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_product_share"/>
        <!-- [REMOVE] this should be changed with stub -->

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>