<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar_separation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/bottom_sheet_selection"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/bt_selection_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:textColor="@color/black_seventy_percent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bt_selection_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bt_selection_number"
            android:layout_below="@id/bt_selection_number"
            android:layout_marginTop="3dp"
            android:text="50 batas maksimum produk terpilih"
            android:textColor="@color/thirty_eight_percent_black"
            android:textSize="11sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/image_bt_selection"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_up" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/chips_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="chips_container" />
</LinearLayout>