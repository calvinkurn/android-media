<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="7dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:showIn="@layout/item_product_score_indicator">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_desc_score"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/ic_list_light_score_product_desc" />

    <TextView
        android:id="@+id/content_desc_product_score"
        style="@style/TextView.Caption.BlackSecondary"
        tools:text="content description" />

</LinearLayout>