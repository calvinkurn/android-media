<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/margin_sm"
    android:paddingLeft="@dimen/margin_sm"
    android:paddingRight="@dimen/margin_sm"
    android:paddingTop="@dimen/margin_sm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/base_picker_multiple_item_cache_image_height"
            android:layout_height="@dimen/base_picker_multiple_item_cache_image_height"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginStart="@dimen/margin_vs"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_title"
                style="@style/TextView.Title"
                tools:text="@string/app_id" />

            <TextView
                android:id="@+id/text_view_content"
                style="@style/TextView.Caption"
                tools:text="@string/app_id" />
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="@dimen/image_width_xxs"
            android:layout_height="@dimen/image_width_xxs"
            android:src="@drawable/ic_arrow_right" />

    </LinearLayout>
</FrameLayout>