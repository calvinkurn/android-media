<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/partial_product_score" />

    <ScrollView
        android:id="@+id/add_product_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/partial_product_info" />

            <include layout="@layout/partial_product_image" />

            <include layout="@layout/partial_product_detail" />

            <include layout="@layout/partial_product_additional_info" />

            <Button
                android:id="@+id/button_save_and_add"
                style="@style/Button.TopAds.Submit"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/product_margin_cards"
                android:background="@color/white"
                android:text="@string/product_label_save_and_add"
                android:textColor="@color/black_fifty_four_percent" />

            <Button
                android:id="@+id/button_save"
                style="@style/Button.TopAds.Submit.Green"
                android:layout_width="match_parent"
                android:text="@string/product_label_save" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>