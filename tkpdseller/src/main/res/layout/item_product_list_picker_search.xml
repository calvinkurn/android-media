<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/image_product_picker_search"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_width="@dimen/image_add_video_url_width"
        android:layout_height="@dimen/image_add_video_url_width" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/container_product_info"
        android:layout_toRightOf="@+id/image_product_picker_search"
        android:layout_toLeftOf="@+id/check_box_picker_product"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_product_name"
            tools:text="Tas selempang wanita bulat merah Good Things by Olympicto bahan Kanvas"
            style="@style/TextView.Body2.Black"/>

        <TextView
            android:id="@+id/text_product_price"
            android:layout_marginTop="@dimen/margin_small"
            tools:text="Rp. 500"
            style="@style/TextView.Body2.BlackSecondary"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/check_box_picker_product"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/checkBoxStyle"/>

</RelativeLayout>