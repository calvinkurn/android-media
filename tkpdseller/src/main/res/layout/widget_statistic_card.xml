<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:divider="@drawable/line_separator"
    android:orientation="vertical"
    android:showDividers="middle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            style="@style/TextView.Subheading.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/margin_small"
            android:background="?attr/selectableItemBackground"
            tools:text="Title"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_arrow_down"
            android:layout_width="15dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow_down" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/margin_small">
        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/TextView.Subheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Total Pengeluaran TopAds" />
        <TextView
            android:id="@+id/tv_amount"
            style="@style/TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Rp900.000" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.tokopedia.seller.gmstat.views.widget.ArrowPercentageView
                android:id="@+id/view_arrow_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_percentage_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view_arrow_percentage"
                tools:text="dari periode sebelumnya" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/frame_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- will be inflated programmatically -->
        </FrameLayout>
    </LinearLayout>

</LinearLayout>