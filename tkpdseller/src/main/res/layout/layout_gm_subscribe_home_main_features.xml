<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <com.tokopedia.gm.subscribe.view.widget.home.GmMainFeatureView
        android:id="@+id/feature_gold_badge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:feature_desc="@string/gmsubscribe_feature_gold_badge_desc"
        app:feature_img="@drawable/ic_gmsubscribe_feature_badge"
        app:feature_title="@string/gmsubscribe_feature_gold_badge"
        />

    <com.tokopedia.gm.subscribe.view.widget.home.GmMainFeatureView
        android:id="@+id/feature_topads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:feature_desc="@string/gmsubscribe_feature_topads_desc"
        app:feature_img="@drawable/ic_gmsubscribe_feature_topads"
        app:feature_title="@string/gmsubscribe_feature_topads"
        />

    <com.tokopedia.gm.subscribe.view.widget.home.GmMainFeatureView
        android:id="@+id/feature_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:feature_desc="@string/gmsubscribe_feature_statistic_desc"
        app:feature_img="@drawable/ic_gmsubscribe_feature_statistic"
        app:feature_title="@string/gmsubscribe_feature_statistic"
        />

    <com.tokopedia.gm.subscribe.view.widget.home.GmMainFeatureView
        android:id="@+id/feature_gold_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:feature_desc="@string/gmsubscribe_feature_ticket_desc"
        app:feature_img="@drawable/ic_gmsubscribe_feature_ticket"
        app:feature_title="@string/gmsubscribe_feature_ticket"
        />

    <com.tokopedia.gm.subscribe.view.widget.home.GmMainFeatureView
        android:id="@+id/feature_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:feature_desc="@string/gmsubscribe_feature_cover_desc"
        app:feature_img="@drawable/ic_gmsubscribe_feature_cover"
        app:feature_title="@string/gmsubscribe_feature_cover"
        />
    
</LinearLayout>