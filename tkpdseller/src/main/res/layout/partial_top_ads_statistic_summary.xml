<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LabelLayout.Border"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0.5dp">

    <com.tokopedia.design.label.DateLabelView
        android:id="@+id/date_label_view"
        style="@style/LabelLayout" />

    <include layout="@layout/partial_separator_horizontal" />

    <LinearLayout
        android:id="@+id/view_group_statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.seller.topads.dashboard.view.widget.TopAdsStatisticLabelView
                android:id="@+id/statistic_label_view_impression"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:content="@string/top_ads_statistic_info_default_value"
                app:title="@string/label_top_ads_impression" />

            <include layout="@layout/partial_separator_vertical" />

            <com.tokopedia.seller.topads.dashboard.view.widget.TopAdsStatisticLabelView
                android:id="@+id/statistic_label_view_click"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:content="@string/top_ads_statistic_info_default_value"
                app:title="@string/label_top_ads_click" />
        </LinearLayout>

        <include layout="@layout/partial_separator_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.seller.topads.dashboard.view.widget.TopAdsStatisticLabelView
                android:id="@+id/statistic_label_view_ctr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:content="@string/top_ads_statistic_info_default_value"
                app:title="@string/label_top_ads_ctr" />

            <include layout="@layout/partial_separator_vertical" />

            <com.tokopedia.seller.topads.dashboard.view.widget.TopAdsStatisticLabelView
                android:id="@+id/statistic_label_view_conversion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:content="@string/top_ads_statistic_info_default_value"
                app:title="@string/label_top_ads_conversion" />

        </LinearLayout>

        <include layout="@layout/partial_separator_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.seller.topads.dashboard.view.widget.TopAdsStatisticLabelView
                android:id="@+id/statistic_label_view_average"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:content="@string/top_ads_statistic_info_default_value"
                app:title="@string/label_top_ads_average" />

            <include layout="@layout/partial_separator_vertical" />

            <com.tokopedia.seller.topads.dashboard.view.widget.TopAdsStatisticLabelView
                android:id="@+id/statistic_label_view_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:content="@string/top_ads_statistic_info_default_value"
                app:title="@string/label_top_ads_cost" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>