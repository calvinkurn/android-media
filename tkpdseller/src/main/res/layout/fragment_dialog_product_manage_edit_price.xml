<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_med">

    <TextView
        android:id="@+id/text_view_title"
        style="@style/TextView.TitleBig"
        android:layout_marginBottom="@dimen/margin_sm"
        android:text="@string/product_manage_menu_set_price" />

    <com.tokopedia.design.text.SpinnerCounterInputView
        android:id="@+id/spinner_counter_input_view_price"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:spinner_decimal_entries="@array/product_currency_entries"
        app:spinner_decimal_hint="@string/product_label_product_price"
        app:spinner_decimal_max_length="@integer/product_max_counter_length"
        app:spinner_decimal_show_counter_button="false"
        app:spinner_decimal_values="@array/product_currency_values" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_med">

        <TextView
            android:id="@+id/string_picker_dialog_confirm"
            style="@style/TextView.Small.Green"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_sm"
            android:layout_marginRight="@dimen/margin_sm"
            android:text="@string/title_save" />

        <TextView
            android:id="@+id/string_picker_dialog_cancel"
            style="@style/TextView.Small.Green"
            android:layout_marginLeft="@dimen/margin_sm"
            android:layout_marginRight="@dimen/margin_sm"
            android:layout_toLeftOf="@id/string_picker_dialog_confirm"
            android:layout_toStartOf="@id/string_picker_dialog_confirm"
            android:text="@string/title_cancel" />

    </RelativeLayout>

</LinearLayout>