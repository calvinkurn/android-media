<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyish_bg"
    tools:context=".opportunity.OpportunityDetailActivity">

    <com.tokopedia.seller.opportunity.customview.OpportunityDetailButtonView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/customview_opportunity_detail_button_view"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/customview_opportunity_detail_button_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailStatusView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customview_opportunity_detail_status_view"
                />

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailProductView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customview_opportunity_detail_product_view"
                />

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailSummaryView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customview_opportunity_detail_summary_view"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>