<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyish_bg"
    tools:context=".opportunity.activity.OpportunityDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailStatusView
                android:id="@+id/customview_opportunity_detail_status_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs" />

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailProductView
                android:id="@+id/customview_opportunity_detail_product_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/bg_line_separator"
                android:orientation="vertical"
                android:showDividers="middle">

                <com.tokopedia.seller.opportunity.customview.PriceDifferentInfoView
                    android:id="@+id/price_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:pdiv_title="@string/opportunity_detail_info_product_price_title" />

                <com.tokopedia.seller.opportunity.customview.PriceDifferentInfoView
                    android:id="@+id/shipping_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:pdiv_title="@string/opportunity_detail_info_shipping_price_title" />
            </LinearLayout>

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailSummaryView
                android:id="@+id/customview_opportunity_detail_summary_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_vs" />

            <Button
                android:id="@+id/button_take_opportunity"
                style="@style/Button.Submit.Green"
                android:text="@string/take_opportunity"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>