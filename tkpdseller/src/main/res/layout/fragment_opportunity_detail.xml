<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greyish_bg"
    tools:context=".opportunity.activity.OpportunityDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailStatusView
                android:id="@+id/customview_opportunity_detail_status_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"/>

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailProductView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customview_opportunity_detail_product_view" />

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailSummaryView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_marginBottom="@dimen/margin_vs"
                android:id="@+id/customview_opportunity_detail_summary_view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/bg_line_separator"/>

                <com.tokopedia.seller.opportunity.customview.OpportunityPriceInfoView
                    android:id="@+id/price_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/bg_line_separator"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"/>

                <com.tokopedia.seller.opportunity.customview.OpportunityPriceInfoView
                    android:id="@+id/shipping_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/bg_line_separator"/>
            </LinearLayout>
            <Button
                android:id="@+id/button_take_opportunity"
                android:text="@string/take_opportunity"
                style="@style/Button.Submit.Green"
                android:visibility="visible"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>