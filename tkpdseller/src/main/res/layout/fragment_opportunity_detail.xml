<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greyish_bg"
    tools:context=".opportunity.activity.OpportunityDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailStatusView
                android:id="@+id/customview_opportunity_detail_status_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"/>

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailProductView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/customview_opportunity_detail_product_view" />

            <com.tokopedia.seller.opportunity.customview.OpportunityDetailSummaryView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_marginBottom="@dimen/margin_vs"
                android:id="@+id/customview_opportunity_detail_summary_view"/>
            <Button
                android:id="@+id/button_take_opportunity"
                android:text="@string/take_opportunity"
                style="@style/Button.Submit.Green"
                android:visibility="visible"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>