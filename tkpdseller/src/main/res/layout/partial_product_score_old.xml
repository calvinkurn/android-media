<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_product_scoring"
    style="@style/LabelLayout.BorderBottom"
    android:paddingTop="@dimen/margin_small_sm"
    android:paddingBottom="@dimen/margin_small_sm"
    app:layout_scrollFlags="scroll|snap|enterAlways">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/info_button"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <TextView
                style="@style/TextView.Micro.BlackSecondary"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/text_score"
                android:text="@string/product_title_activity_product_score"
                android:textColor="@color/font_black_disabled_38" />

            <TextView
                android:id="@+id/text_score"
                style="@style/TextView.Micro.BlackSecondary"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/product_score_label_minus"
                android:textColor="@color/low_score_value" />
        </RelativeLayout>

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progress_value_score"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:rcBackgroundColor="@color/black_five_percent"
            app:rcMax="100"
            app:rcProgress="0"
            app:rcProgressColor="@color/low_score_value"
            app:rcRadius="6.5dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/info_button"
        android:layout_width="@dimen/image_width_xs"
        android:layout_height="@dimen/image_width_xs"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_info" />

</RelativeLayout>