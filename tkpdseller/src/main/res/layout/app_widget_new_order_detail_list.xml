<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/container_view"
    android:layout_height="50dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        style="@style/TextView.Micro.WhitePrimary"
        android:id="@+id/new_order_remaining_days"
        android:layout_width="70dp"
        android:layout_centerVertical="true"
        android:background="@color/blue_link"
        tools:text="1 Hari lagi"
        android:gravity="center_horizontal"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_3"
        />

    <LinearLayout
        android:id="@+id/new_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_toLeftOf="@id/new_order_remaining_days"
        android:layout_toStartOf="@id/new_order_remaining_days"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <TextView
            style="@style/TextView.Micro"
            android:id="@+id/new_order_name"
            tools:text="Fauzan Arif"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            style="@style/TextView.Micro.BlackDisabled"
            android:id="@+id/new_order_date"
            tools:text="31 Agustus 2016"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>



</RelativeLayout>