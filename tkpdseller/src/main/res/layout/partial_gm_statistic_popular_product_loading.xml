<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_sm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/font_loading_height_display4"
            android:layout_height="@dimen/font_loading_height_display4"
            app:use_gradient="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_m"
                android:layout_height="@dimen/font_loading_height_title"
                android:layout_marginLeft="@dimen/margin_sm"
                android:layout_marginStart="@dimen/margin_sm"
                app:use_gradient="true" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_xl"
                android:layout_height="@dimen/font_loading_height_body2"
                android:layout_marginLeft="@dimen/margin_sm"
                android:layout_marginStart="@dimen/margin_sm"
                android:layout_marginTop="@dimen/margin_sm"
                app:use_gradient="true" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/font_loading_width_l"
                android:layout_height="@dimen/font_loading_height_body2"
                android:layout_marginLeft="@dimen/margin_sm"
                android:layout_marginStart="@dimen/margin_sm"
                android:layout_marginTop="@dimen/margin_sm"
                app:use_gradient="true" />
        </LinearLayout>
    </LinearLayout>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/font_loading_width_xxxl"
        android:layout_height="@dimen/font_loading_height_body2"
        android:layout_marginTop="@dimen/margin_sm"
        app:use_gradient="true" />
</LinearLayout>