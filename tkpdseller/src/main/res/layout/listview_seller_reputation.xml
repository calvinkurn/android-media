<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="9dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:gravity="center_vertical"
                android:textColor="@color/thirty_eight_percent_black"
                android:textSize="@dimen/fontvs"
                tools:text="wowowowowowow" />

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="@dimen/banner_margin"
                android:background="@android:drawable/list_selector_background"
                android:gravity="center_vertical"
                android:textColor="@color/black_seventy_percent"
                android:textSize="@dimen/fonts"
                tools:text="ini apaan sih" />

            <TextView
                android:id="@+id/tv_invoice"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginTop="@dimen/banner_margin"
                android:background="@android:drawable/list_selector_background"
                android:gravity="center_vertical"
                android:textColor="@color/thirty_eight_percent_black"
                android:textSize="@dimen/fontvs"
                tools:text="jir ini apaan ya" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@android:drawable/list_selector_background"
            android:gravity="end|center_vertical"
            android:textColor="@color/black_seventy_percent"
            android:textSize="@dimen/fontl"
            tools:text="0" />


    </LinearLayout>
</RelativeLayout>