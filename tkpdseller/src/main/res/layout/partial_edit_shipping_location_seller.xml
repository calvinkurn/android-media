<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/seller_city_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small">

        <EditText
            android:id="@+id/seller_text_edit_shipping_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/title_city"
            android:textColor="@color/black"
            android:textSize="@dimen/fontm" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/seller_text_input_layout_postal_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_city_text_input_layout"
        android:layout_marginTop="@dimen/padding_small">

        <AutoCompleteTextView
            android:id="@+id/seller_postal_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="3"
            android:digits="1234567890"
            android:hint="@string/title_post_code"
            android:inputType="phone"
            android:maxLength="5" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>