<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="@dimen/image_width_xxxl"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_openshop" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_hello"
            style="@style/TextView.Headline"
            android:layout_gravity="center"
            tools:text="@string/hello_x" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Title"
            android:layout_gravity="center"
            android:text="@string/fill_domain_and_shop" />

        <com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout
            android:id="@+id/text_input_shop_name"
            style="@style/HintTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:hint="@string/shop_name"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/max_shop_name">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_shop_name"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:maxLength="24"
                android:singleLine="true" />
        </com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout>

        <TextView
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_vs"
            android:layout_marginTop="@dimen/padding_med"
            android:text="@string/shop_open_label_shop_domain" />

        <TextView
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_vs"
            android:text="@string/shop_open_info_shop_domain_definition" />

        <com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout
            android:id="@+id/text_input_domain_name"
            style="@style/HintTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:hint="@string/domain_name"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/max_domain_name"
            app:prefixString="@string/domain_short">

            <com.tokopedia.seller.common.widget.PrefixEditText
                android:id="@+id/edit_text_domain_name"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:singleLine="true"
                app:prefix="@string/domain_short"
                android:maxLength="@integer/max_domain_name_plus_tokopedia"
                app:prefixTextColor="@color/font_black_secondary_54" />

        </com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_submit"
            style="@style/Button.Submit.Green"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="@dimen/margin_med"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/title_open_shop" />
    </LinearLayout>
</ScrollView>

