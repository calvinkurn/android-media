<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.tokopedia.seller.lib.datepicker.widget.DatePickerLabelView
            android:id="@+id/date_picker_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:date_picker_title="@string/label_date_picker_start_date"/>

        <com.tokopedia.seller.lib.datepicker.widget.DatePickerLabelView
            android:id="@+id/date_picker_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:date_picker_title="@string/label_date_picker_end_date"/>
    </LinearLayout>


    <Button
        android:id="@+id/button_submit"
        style="@style/Button.Submit.Green"
        android:text="@string/save_date"/>

</LinearLayout>