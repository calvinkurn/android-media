<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gmstat_padding_item_left_right"
    android:paddingLeft="@dimen/gmstat_padding_item_left_right"
    android:paddingRight="@dimen/gmstat_padding_item_left_right"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/TextView.Subheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Total Pengeluaran TopAds" />
    <TextView
        android:id="@+id/tv_amount"
        style="@style/TextView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Rp900.000" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tokopedia.seller.gmstat.views.widget.ArrowPercentageView
            android:id="@+id/view_arrow_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_percentage_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view_arrow_percentage"
            android:layout_marginLeft="5dp"
            tools:text="dari periode sebelumnya" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/vg_date_range">

        <com.tokopedia.seller.lib.widget.GMDateRangeView
            android:id="@+id/gm_statistic_transaction_range_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.tokopedia.seller.lib.widget.GMDateRangeView
            android:id="@+id/gm_statistic_transaction_range_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/gm_statistic_transaction_graph_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gmstat_margin_bottom"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/gm_statistic_transaction_graph_container_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- inflate line chart programmatically-->
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>