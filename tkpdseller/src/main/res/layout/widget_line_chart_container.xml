<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line_chart_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/TextView.Body1"
        android:layout_marginBottom="2dp"
        android:minWidth="100dp"
        tools:text="Total Pengeluaran TopAds" />

    <TextView
        android:id="@+id/tv_amount"
        style="@style/TextView.Display1"
        android:layout_marginBottom="2dp"
        tools:text="Rp900.000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.gm.statistic.view.widget.ArrowPercentageView
            android:id="@+id/view_arrow_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_percentage_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/view_arrow_percentage"
            android:minWidth="80dp"
            tools:text="dari periode sebelumnya" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vg_date_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.gm.statistic.view.widget.GMDateRangeView
            android:id="@+id/gm_statistic_transaction_range_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.tokopedia.gm.statistic.view.widget.GMDateRangeView
            android:id="@+id/gm_statistic_transaction_range_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/gm_statistic_transaction_graph_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gmstat_margin_bottom"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/gm_statistic_transaction_graph_container_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- inflate line chart programmatically-->
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>