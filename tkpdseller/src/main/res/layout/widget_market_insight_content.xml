<?xml version="1.0" encoding="utf-8"?>
<!-- change the height 230dp, we also have to change height of widget_market_insight_empty_no_gm -->
<LinearLayout
    android:id="@+id/market_insight_gold_merchant"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="8dp">

    <TextView
        style="@style/TextView.Caption.BlackSecondary"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/gm_statistic_most_popular_keyword"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/market_insight_footer"
        style="@style/TextView.Caption.BlackSecondary"
        tools:text="@string/gm_statistic_these_keywords_are_based_on_category_x"/>
</LinearLayout>