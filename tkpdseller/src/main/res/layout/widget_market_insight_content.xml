<?xml version="1.0" encoding="utf-8"?>
<!-- change the height 230dp, we also have to change height of widget_market_insight_empty_no_gm -->
<LinearLayout android:id="@+id/market_insight_gold_merchant"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="8dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/most_popular_keyword"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textColor="@color/black_54"
        android:textSize="11sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/market_insight_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/market_insight_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/these_keywords_are_based_on_category_x"
        android:textColor="@color/black_54"
        android:textSize="11sp"/>

</LinearLayout>
