<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:id="@+id/sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selectable_white_background"
            android:gravity="center">

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/sort_but"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                app:drawableLeftCompat="@drawable/ic_sort"
                android:drawablePadding="@dimen/padding_vs"
                android:gravity="center_vertical"
                android:text="@string/action_sort" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selectable_white_background"

            android:gravity="center">

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                app:drawableLeftCompat="@drawable/ic_filter_black"
                android:drawablePadding="@dimen/padding_vs"
                android:gravity="center_vertical"
                android:text="@string/filter" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_vs"
            android:background="@drawable/bg_yellow_border_yelow"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/header_opportunity" />

        <android.support.v7.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:background="@drawable/cards_ui"
            android:hint="@string/search_product"
            android:iconifiedByDefault="false"
            app:iconifiedByDefault="false" />

        <com.tokopedia.core.customwidget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/filter_layout">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/opportunity_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="vertical" />
        </com.tokopedia.core.customwidget.SwipeToRefresh>

    </LinearLayout>
</RelativeLayout>