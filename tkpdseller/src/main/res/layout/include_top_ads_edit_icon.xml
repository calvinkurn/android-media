<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/TextView"
        android:text="@string/label_top_ads_show_time"/>

    <RadioGroup
        android:id="@+id/radio_group_sticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_sticker_speaker"
            style="@style/RadioGroup"/>

        <RadioButton
            android:id="@+id/radio_button_sticker_thumb"
            style="@style/RadioGroup"/>

        <RadioButton
            android:id="@+id/radio_button_sticker_fire"
            style="@style/RadioGroup"/>

    </RadioGroup>
</LinearLayout>