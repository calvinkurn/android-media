<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    android:padding="4dp">

    <android.support.v7.widget.LinearLayoutCompat android:id="@+id/view_group_tutor_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/black"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.v7.widget.AppCompatTextView
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:textSize="@dimen/font_medium"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_previous"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="@dimen/buttom_width_small"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"/>
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/view_group_indicator"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_next"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="@dimen/buttom_width_small"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/selector_white"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>
