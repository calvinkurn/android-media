<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/gmstat_padding_item_left_right"
    android:paddingTop="@dimen/gmstat_padding_item_top_transaction"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.seller.gmstat.library.LoaderImageView
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@mipmap/icon_produk"
        app:use_gradient="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/data_product_icon_loading" />

    <View
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1E000000"
        android:layout_below="@id/data_product_icon_loading"/>

    <com.tokopedia.seller.gmstat.library.LoaderTextView
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        app:use_gradient="true"
        android:text="DATA PRODUK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/data_product_title_loading"
        android:paddingTop="4dp"
        android:layout_marginLeft="8dp"
        android:textColor="#418bdf"
        android:textSize="14sp"
        android:layout_alignTop="@+id/data_product_icon_loading"
        android:layout_toRightOf="@+id/data_product_icon_loading"
        android:layout_toEndOf="@+id/data_product_icon_loading" />

    <com.tokopedia.seller.gmstat.library.LoaderImageView
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        app:use_gradient="true"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        android:layout_below="@+id/separator_1"
        android:id="@+id/image_popular_product_loading"/>

    <com.tokopedia.seller.gmstat.library.LoaderTextView
        app:use_gradient="true"
        android:layout_marginTop="10dp"
        android:textColor="#89000000"
        android:textSize="12sp"
        android:text="Produk terlaris"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="11dp"
        android:id="@+id/text_popular_product_loading"
        android:layout_alignTop="@+id/separator_1"
        android:layout_toRightOf="@+id/image_popular_product_loading"
        android:layout_toEndOf="@+id/image_popular_product_loading" />

    <com.tokopedia.seller.gmstat.library.LoaderTextView
        app:use_gradient="true"
        android:layout_marginTop="4dp"
        android:textColor="#B2000000"
        android:textSize="14sp"
        android:layout_marginLeft="11dp"
        android:text="Kaos Reglan bahan Gildan Super\nNyaman"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/popular_product_description_loading"
        android:layout_below="@+id/text_popular_product_loading"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_toRightOf="@+id/image_popular_product_loading" />
</RelativeLayout>