<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="@dimen/padding_vs"
    android:weightSum="1">

    <ImageView
        android:id="@+id/image_selected"
        android:layout_width="@dimen/shop_ava"
        android:layout_height="@dimen/shop_ava"
        app:srcCompat="@drawable/ic_add_black_48dp"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/desc_selected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/choose_catalog_prompt"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_weight="1"/>

</LinearLayout>