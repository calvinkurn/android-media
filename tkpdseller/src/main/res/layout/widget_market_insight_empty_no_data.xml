<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f9f9f9"
    android:gravity="center"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="113dp"
        android:layout_height="54dp"
        android:src="@drawable/icon_g_m_seller_app_pasar_empty_05"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="@string/gm_statistic_no_market_insight_in_this_period"
        android:textColor="#61000000"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/add_product_market_insight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#42b549"
        android:layout_marginTop="28dp"
        android:text="@string/gm_statistic_plus_add_product"
        android:textSize="14sp"/>

</LinearLayout>
