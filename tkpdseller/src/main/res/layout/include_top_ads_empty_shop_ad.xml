<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_empty_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:text="@string/top_ads_empty_shop_title_text"/>

    <TextView
        android:id="@+id/text_view_empty_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:gravity="center"
        android:textColor="@color/grey_400"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:text="@string/top_ads_empty_shop_content_text"/>
</LinearLayout>