<?xml version="1.0" encoding="utf-8"?>
<!-- change the height 160dp, we also have to change height of widget_transaction_data_content -->
<LinearLayout android:id="@+id/transaction_data_container_non_gold_merchant"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#CD000000"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="26dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_lock_icon_again" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/transaction_data_no_gm_text"
            android:textAlignment="center"
            android:textColor="#80ffffff"
            android:textSize="14sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/move_to_gmsubscribe"
        android:layout_width="244dp"
        android:layout_height="52dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rounded_corner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Upgrade ke Gold Merchant"
            android:textColor="#42b549"
            />
    </RelativeLayout>

    <!--<com.tokopedia.seller.gmstat.views.NChart-->
    <!--android:id="@+id/transaction_chart"-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_weight="0.7"-->
    <!--android:layout_height="91.3dp" />-->
</LinearLayout>