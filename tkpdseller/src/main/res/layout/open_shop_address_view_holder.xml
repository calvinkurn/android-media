<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/text_input_address"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:hint="@string/shop_address">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_text_input_address"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/shop_address_hint"
            android:maxLines="2"
            android:singleLine="true" />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/text_input_postal"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:hint="@string/shop_postal_code">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edit_text_input_postal"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:singleLine="true" />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>


</LinearLayout>