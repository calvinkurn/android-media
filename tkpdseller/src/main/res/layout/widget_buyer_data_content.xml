<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
    android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/gm_statistic_buyer_count"
            android:textColor="#89000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_buyer_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textColor="#B2000000"
            android:textSize="24sp"
            tools:text="999,9jt" />

        <com.tokopedia.seller.goldmerchant.statistic.view.widget.ArrowPercentageView
            android:id="@+id/arrow_buyer_data_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:arrow_percentage_text_size="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/data_buyer_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="horizontal">

        <com.tokopedia.seller.goldmerchant.statistic.view.widget.circleprogress.DonutProgress
            android:id="@+id/buyer_data_pie_chart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:donut_finished_color="@color/tkpd_red"
            app:donut_finished_stroke_width="4dp"
            app:donut_max="100"
            app:donut_show_text="false"
            app:donut_unfinished_color="#cecece"
            app:donut_unfinished_stroke_width="4dp" />

        <LinearLayout
            android:id="@+id/data_buyer_container_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_legend_pie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5722"
                android:textSize="24sp"
                tools:text="0%" />

            <TextView
                android:id="@+id/tv_main_legend_pie_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5722"
                android:textSize="12sp"
                tools:text="Wanita" />

            <TextView
                android:id="@+id/tv_second_legend_pie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#a1a1a1"
                android:textSize="12sp"
                tools:text="20% Pria" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>