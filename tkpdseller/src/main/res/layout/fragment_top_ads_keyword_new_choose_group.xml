<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/margin_med">

        <com.tokopedia.seller.lib.widget.TkpdTextInputLayout
            android:id="@+id/input_layout_choose_group"
            style="@style/TextInputLayout"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.VerySmall">

            <com.tokopedia.seller.topads.view.widget.TopAdsCustomAutoCompleteTextView
                android:id="@+id/choose_group_auto_text"
                style="@style/EditText.GreenHighlight.TopAdsCustomAutoCompleteTextView"
                android:hint="@string/label_top_ads_choose_group" />

        </com.tokopedia.seller.lib.widget.TkpdTextInputLayout>

    </ScrollView>

    <include layout="@layout/include_separator_horizontal"/>

    <Button
        android:id="@+id/button_submit"
        style="@style/Button.Submit.Green"
        android:enabled="false"
        android:text="@string/next" />

</LinearLayout>