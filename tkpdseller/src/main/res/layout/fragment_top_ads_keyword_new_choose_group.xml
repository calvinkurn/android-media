<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/activity_horizontal_margin">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_topads_search_group" />

            <com.tokopedia.seller.product.view.widget.DefValueSpinnerTextView
                android:id="@+id/spinner_keyword_type"
                style="@style/LabelLayoutWithoutBorder"
                android:padding="0dp"
                app:spinner_entries="@array/top_ads_keyword_type_entries"
                app:spinner_hint="@string/top_ads_keyword_type"
                app:spinner_selection_index="-1"
                app:spinner_values="@array/top_ads_keyword_type_values"
                app:default_value="@string/top_ads_choose_keyword_type"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

    <Button
        android:id="@+id/button_submit"
        style="@style/Button.Submit.Green"
        android:enabled="false"
        android:text="@string/next" />

</LinearLayout>