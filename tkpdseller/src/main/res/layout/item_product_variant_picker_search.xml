<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/base_picker_multiple_item_cache_image_height"
            android:layout_height="@dimen/base_picker_multiple_item_cache_image_height"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_marginEnd="@dimen/margin_vs"
            android:scaleType="centerCrop"
            tools:src="@drawable/shape_oval"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_view_title"
            style="@style/TextView.Body1"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="@string/app_id" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/checkBoxStyle"/>

    </LinearLayout>
</FrameLayout>