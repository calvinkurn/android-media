<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/LabelLayoutWithoutBorder"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.TopAds.Body.Gray"
            android:text="@string/product_label_product_about" />

    </LinearLayout>

    <com.tokopedia.seller.product.view.widget.SpinnerCounterInputView
        android:id="@+id/spinner_count_input_view_price"
        style="@style/LabelLayoutWithoutBorder"
        app:spinner_decimal_entries="@array/product_currency_entries"
        app:spinner_decimal_hint="@string/product_label_product_price"
        app:spinner_decimal_show_counter_button="false" />

    <com.tokopedia.seller.product.view.widget.SpinnerCounterInputView
        android:id="@+id/spinner_count_input_view_weight"
        style="@style/LabelLayoutWithoutBorder"
        android:layout_marginTop="@dimen/product_margin_cards"
        app:spinner_decimal_entries="@array/product_weight_entries"
        app:spinner_decimal_hint="@string/product_label_product_weight"
        app:spinner_decimal_show_counter_button="false" />

    <com.tokopedia.seller.product.view.widget.CounterInputView
        style="@style/LabelLayoutWithoutBorder"
        android:layout_marginTop="@dimen/product_margin_cards"
        app:counter_hint="@string/product_label_minimum_buy" />

    <com.tokopedia.seller.product.view.widget.SpinnerTextView
        android:id="@+id/spinner_text_view_stock"
        style="@style/LabelLayoutWithoutBorder"
        app:spinner_entries="@array/product_stock_status_entries"
        app:spinner_hint="@string/product_label_status"
        app:spinner_selection="0" />

    <com.tokopedia.seller.lib.widget.TopAdsLabelView
        android:id="@+id/label_view_shop_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/product_margin_cards"
        app:content="@string/product_label_choose"
        app:content_color="@color/tkpd_main_green"
        app:label_show_arrow="true"
        app:title="@string/product_label_shop_window" />

    <com.tokopedia.seller.product.view.widget.SpinnerTextView
        android:id="@+id/spinner_text_view_condition"
        style="@style/LabelLayoutWithoutBorder"
        android:layout_marginTop="@dimen/product_margin_cards"
        app:spinner_entries="@array/product_condition_entries"
        app:spinner_hint="@string/product_label_condition" />

    <com.tokopedia.seller.product.view.widget.SpinnerTextView
        android:id="@+id/spinner_text_view_insurance"
        style="@style/LabelLayoutWithoutBorder"
        app:spinner_entries="@array/product_insurance_entries"
        app:spinner_hint="@string/product_label_insurance" />

    <com.tokopedia.seller.product.view.widget.SpinnerTextView
        android:id="@+id/spinner_text_view_free_returns"
        style="@style/LabelLayoutWithoutBorder"
        app:spinner_entries="@array/product_free_returns_entries"
        app:spinner_hint="@string/product_label_free_returns" />

    <LinearLayout
        style="@style/LabelLayoutWithoutBorder"
        android:layout_marginTop="@dimen/product_margin_cards"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_description"
            style="@style/TextInputLayout"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/product_max_character_description">

            <EditText
                android:id="@+id/edit_text_description"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:hint="@string/product_label_product_description" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</LinearLayout>