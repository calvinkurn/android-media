<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_product_score"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_background_view_topads"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/info_button"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <TextView
                style="@style/TextView"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/text_score"
                android:text="@string/product_score_label_title"
                android:textColor="@color/thirty_eight_percent_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_score"
                style="@style/TextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/low_score_value"
                android:textSize="11sp"
                android:text="@string/product_score_label_minus" />
        </RelativeLayout>

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/progress_value_score"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            app:rcBackgroundColor="@color/black_five_percent"
            app:rcMax="100"
            app:rcProgress="0"
            app:rcProgressColor="@color/low_score_value"
            app:rcRadius="6.5dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/info_button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_info_grey" />

</RelativeLayout>