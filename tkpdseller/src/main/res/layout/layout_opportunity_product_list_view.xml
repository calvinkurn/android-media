<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyish_bg"
    android:padding="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_m"
                android:layout_marginRight="@dimen/margin_small"
                android:src="@drawable/remove" />

            <TextView
                android:id="@+id/title_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/title_quantity"
                android:textColor="@color/black"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/title_quantity"
                android:layout_marginBottom="@dimen/margin_vs"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/fontvs"
                tools:text="2 barang" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_toLeftOf="@id/title_quantity"
                android:layout_toRightOf="@id/product_image"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold"
                tools:text="iPhone Samsung Galaxy 7_ Kw superrrrrrr keluaran tahun 1999" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/greyish_bg" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            tools:text="Pesen yang warna merah, gak perlu pake memory card, tapi pake casing yang ijo, jangan pake screen protektor saya ga perlu. tolong buruan bos~" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/greyish_bg" />

        <TextView
            android:id="@+id/action_see_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_vs"
            android:text="Lihat Produk"
            android:textColor="@color/href_link"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

</RelativeLayout>