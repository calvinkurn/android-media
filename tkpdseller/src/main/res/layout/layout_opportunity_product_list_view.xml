<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/margin_ms"
    android:layout_marginBottom="@dimen/margin_ms"
    android:layout_marginLeft="@dimen/margin_ms"
    android:layout_marginRight="@dimen/margin_ms" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="@dimen/img_thumb_m"
                android:layout_height="@dimen/img_thumb_m"
                android:src="@drawable/remove"
                android:layout_marginRight="@dimen/margin_ms"
                android:layout_marginEnd="@dimen/margin_ms"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                tools:text="iPhone Samsung Galaxy 7_ Kw superrrrrrr keluaran tahun 1999 fewfgweffewfwefwefew" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:id="@+id/title_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_quantity_colon"
                    android:textColor="@color/label_text_color"
                    android:textSize="@dimen/fontvs"/>

                <TextView
                    android:id="@+id/product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:textSize="@dimen/fontvs"
                    android:textColor="@color/black"
                    tools:text="2 barang" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_ms"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@color/greyish_bg" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note_for_seller"
            android:layout_marginBottom="@dimen/margin_vs"
            android:textColor="@color/label_text_color" />
        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            tools:text="Pesen yang warna merah, gak perlu pake memory card, tapi pake casing yang ijo, jangan pake screen protektor saya ga perlu. tolong buruan bos~" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_ms"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@color/greyish_bg" />

        <TextView
            android:id="@+id/action_see_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_vs"
            android:text="@string/see_product"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/font_small" />

    </LinearLayout>
</android.support.v7.widget.CardView>
