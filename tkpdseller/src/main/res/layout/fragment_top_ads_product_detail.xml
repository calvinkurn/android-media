<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.seller.topads.view.fragment.TopAdsDetailFragment">

    <LinearLayout
        android:id="@+id/container_detail_topads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/include_topads_header_detail"
            android:layout_marginBottom="@dimen/topads_detail_padding_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/include_topads_content_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/topads_detail_padding_item" />

    </LinearLayout>

</ScrollView>
