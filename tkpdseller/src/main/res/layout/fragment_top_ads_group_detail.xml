<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/top_ads_padding_top_list_with_date">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/include_topads_header_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.tokopedia.seller.lib.widget.LabelView
                    android:id="@+id/items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/topads_detail_padding_item"
                    app:title="@string/title_top_ads_product" />

                <include layout="@layout/include_topads_content_detail" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.tokopedia.core.customwidget.SwipeToRefresh>

    <com.tokopedia.seller.lib.widget.DateLabelView
        android:id="@+id/date_label_view"
        style="@style/LabelLayoutWithBorderBottom"
        app:layout_behavior="com.tokopedia.seller.lib.widget.QuickReturnHeaderBehavior" />
</android.support.design.widget.CoordinatorLayout>