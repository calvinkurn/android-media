<com.tokopedia.core.customwidget.SwipeToRefresh xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.seller.topads.view.fragment.TopAdsDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container_detail_topads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/include_topads_header_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tokopedia.seller.topads.view.widget.TopAdsLabelView
                android:id="@+id/items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/topads_detail_padding_item"
                app:title="@string/title_top_ads_product" />

            <include
                layout="@layout/include_topads_content_detail" />

        </LinearLayout>

    </ScrollView>

</com.tokopedia.core.customwidget.SwipeToRefresh>