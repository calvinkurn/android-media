<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="@dimen/margin_sm">

    <ImageView
        android:id="@+id/image_view_product"
        android:layout_width="@dimen/image_width_xl"
        android:layout_height="@dimen/image_width_xl"
        android:src="@drawable/tkpd_address_card" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            style="@style/TextView.Body1"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_stock"
            style="@style/TextView.Body1.BlackDisabled"
            android:layout_marginTop="@dimen/margin_ms"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_price"
            style="@style/TextView.Body1.Orange"
            android:layout_marginTop="@dimen/margin_ms"
            tools:text="@string/app_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_ms"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_view_featured"
                android:layout_width="@dimen/image_width_xxs"
                android:layout_height="@dimen/image_width_xxs"
                android:src="@drawable/ic_featured_product" />

            <TextView
                android:id="@+id/text_view_cashback"
                style="@style/TextView.Caption.BlackDisabled"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginStart="@dimen/margin_ms"
                android:background="@drawable/bg_rect_stroke_green"
                android:padding="@dimen/padding_vs"
                android:textColor="@android:color/white"
                tools:text="@string/product_manage_cashback" />

            <TextView
                android:id="@+id/text_view_wholesale"
                style="@style/TextView.Caption.BlackDisabled"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginStart="@dimen/margin_ms"
                android:background="@drawable/bg_rect_stroke_lighter_gray"
                android:padding="@dimen/padding_vs"
                android:text="@string/product_label_wholesale" />

            <TextView
                android:id="@+id/text_view_po"
                style="@style/TextView.Caption.BlackDisabled"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginStart="@dimen/margin_ms"
                android:background="@drawable/bg_rect_stroke_lighter_gray"
                android:padding="@dimen/padding_vs"
                android:text="@string/product_label_po" />

            <ImageView
                android:id="@+id/image_view_free_return"
                android:layout_width="@dimen/image_width_xxs"
                android:layout_height="@dimen/image_width_xxs"
                android:layout_marginLeft="@dimen/margin_ms"
                android:layout_marginStart="@dimen/margin_ms"
                android:src="@drawable/ic_free_return" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/image_button_option"
            android:layout_width="@dimen/image_width_s"
            android:layout_height="@dimen/image_width_s"
            android:layout_alignParentTop="true" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check_box_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:theme="@style/checkBoxStyle"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>