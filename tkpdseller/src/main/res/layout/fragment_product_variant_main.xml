<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.seller.common.widget.LabelView
        android:id="@+id/label_view_variant_level_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label_show_arrow="true"
        app:title="@string/product_label_video" />

    <com.tokopedia.seller.common.widget.LabelView
        android:id="@+id/label_view_variant_level_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label_show_arrow="true"
        app:title="@string/product_label_video" />

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="@dimen/activity_vertical_margin" />

    </com.tokopedia.core.customwidget.SwipeToRefresh>
</LinearLayout>