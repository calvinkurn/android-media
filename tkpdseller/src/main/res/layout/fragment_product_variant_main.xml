<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.seller.common.widget.LabelView
        android:id="@+id/label_view_variant_level_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:content_color="@color/tkpd_main_green"
        app:label_show_arrow="true"
        app:content="@string/product_label_choose"
        app:weighted="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bg_line_separator"/>

    <com.tokopedia.seller.common.widget.LabelView
        android:id="@+id/label_view_variant_level_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:content_color="@color/tkpd_main_green"
        app:label_show_arrow="true"
        app:content="@string/product_label_choose"
        app:weighted="true"/>

    <LinearLayout
        android:id="@+id/linear_layout_variant_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            style="@style/TextView.Body1.BlackSecondary"
            android:text="@string/product_variant_manage_variant"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_small"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false" />
    </LinearLayout>
</LinearLayout>