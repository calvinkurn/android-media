<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/top_ads_padding_top_list_with_date" />

    </com.tokopedia.core.customwidget.SwipeToRefresh>

    <com.tokopedia.seller.lib.widget.DateLabelView
        android:id="@+id/date_label_view"
        style="@style/LabelLayoutWithBorderBottom"
        app:layout_behavior="com.tokopedia.seller.lib.widget.QuickReturnHeaderBehavior" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_filter"
        style="@style/Fab"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_filter"
        app:behavior_autoHide="true" />
</android.support.design.widget.CoordinatorLayout>