<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@drawable/rounded"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:layout_marginLeft="@dimen/margin_sm"
    tools:layout_marginTop="@dimen/margin_sm">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/shape_oval"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_title"
        style="@style/TextView.Body1"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginStart="@dimen/margin_vs"
        android:layout_weight="1"
        tools:text="@string/app_id" />

    <ImageButton
        android:id="@+id/image_button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/vector_cancel_24dp" />

</LinearLayout>