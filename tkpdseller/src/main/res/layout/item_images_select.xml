<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_width_xxxl"
    android:layout_height="@dimen/image_width_xxxl"
    android:background="@drawable/bg_rect_stroke_lighter_gray"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageview_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        tools:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/padding_vs"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_vs"
        android:background="@drawable/bg_rect_stroke_gray_dashed" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_mainpicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#AA000000"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_small"
        tools:text="main picture" />
</FrameLayout>
