<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:background="@color/white"/>

    <com.tkpd.library.ui.floatbutton.FabSpeedDial
        android:id="@+id/fab_speed_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:touchGuardDrawable="@drawable/background_blur"
        app:fabGravity="bottom_end"
        app:fabMenu="@menu/menu_add_product_instoped"
        app:fabBackgroundTint="@color/green_500"
        app:miniFabBackgroundTint="@color/mini_fab_title_background_tint"
        app:miniFabDrawableTint="@android:color/white"
        app:miniFabTitleTextColor="@android:color/white" />
</FrameLayout>