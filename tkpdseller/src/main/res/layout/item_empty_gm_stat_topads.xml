<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="16dp">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_top_ads"
        android:layout_marginBottom="@dimen/margin_small"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@style/TextView.Body1.Bold"
        android:gravity="center_horizontal"
        tools:text="@string/gm_stat_top_ads_empty_title_no_topads_credit"
        android:layout_marginBottom="@dimen/margin_small"/>
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@style/TextView.Body1"
        android:gravity="center_horizontal"
        tools:text="@string/gm_stat_top_ads_empty_desc_no_topads_credit"
        android:layout_marginBottom="@dimen/margin_med"/>

    <TextView
        android:clickable="true"
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.Body1"
        tools:text="@string/find_out"
        android:textColor="@color/tkpd_main_green"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:layout_marginBottom="@dimen/margin_large"/>
    
    <Button
        android:id="@+id/button_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:background="@color/tkpd_main_orange"
        android:textColor="@color/white"
        android:text="@string/gm_stat_empty_register_topads_now"
        android:textAllCaps="false"/>
</LinearLayout>