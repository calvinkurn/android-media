<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="17dp"
    android:layout_marginBottom="17dp"
    android:background="@drawable/gmsubscribe_background_card_without_corner"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <CheckBox
            android:id="@+id/check_box_to_open_voucher_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gm_voucher_code_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/check_box_to_open_voucher_code"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toRightOf="@+id/check_box_to_open_voucher_code"
            android:text="@string/gmsubscribe_voucher_code_title"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/gm_code_voucher_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/gm_voucher_check_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gmsubscribe_voucher_hint">

                <EditText
                    android:id="@+id/gm_voucher_check_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textview_voucher_message_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tkpd_main_green"
                android:textSize="12sp"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/gm_voucher_code_check_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/tkpd_main_green"
                android:text="@string/gmsubscribe_voucher_code_check_button"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>