<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_sm">

        <ImageView
            style="@style/ImageView.ShopSettingTitleImage"
            android:src="@drawable/ic_icon_toko" />

        <TextView
            android:id="@+id/welcome_shop_label"
            style="@style/TextView.TitleBig"
            android:layout_marginBottom="@dimen/margin_sm"
            android:gravity="center"
            android:text="@string/hello_x" />

        <TextView
            style="@style/TextView.Small"
            android:layout_marginBottom="@dimen/margin_large"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="@string/shop_open_label_info_title_shop" />

        <com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout
            android:id="@+id/shop_slogan_input_layout"
            style="@style/HintTextInputLayout"
            android:layout_marginBottom="@dimen/margin_large"
            android:hint="@string/shop_open_label_slogan"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/open_shop_max_slogan_char"
            app:helper="@string/shop_open_label_slogan_info"
            app:helperEnabled="true">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/shop_slogan_input_text"
                style="@style/EditText.ShopSetting"
                android:layout_width="match_parent"
                android:maxLength="@integer/open_shop_max_slogan_char" />
        ​</com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout>

        <com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout
            android:id="@+id/shop_desc_input_layout"
            style="@style/HintTextInputLayout"
            android:layout_marginBottom="@dimen/margin_large"
            android:hint="@string/shop_open_label_desc_shop"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/open_shop_max_desc_char"
            app:helper="@string/shop_open_label_description_info"
            app:helperEnabled="true">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/shop_desc_input_text"
                style="@style/EditText.ShopSetting"
                android:layout_width="match_parent"
                android:maxLength="@integer/open_shop_max_desc_char" />
            ​
        </com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout>

        <TextView
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/shop_open_label_logo"
            android:visibility="gone"
            tools:visibility="visible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:visibility="gone"
            tools:visibility="visible">

            <FrameLayout
                android:id="@+id/image_picker_container"
                style="@style/View.ShopSetting.ImagePicker">

                <ImageView
                    android:id="@+id/image_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add_photo_box" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/container_info_picker_image"
                style="@style/View.ShopSetting.InfoImagePicker"
                android:layout_toRightOf="@+id/image_picker_container">

                <TextView
                    style="@style/TextView.Micro.BlackDisabled"
                    android:text="@string/shop_open_label_max_file_size"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextView.Micro.BlackDisabled"
                    android:layout_marginBottom="@dimen/margin_ms"
                    android:text="@string/shop_open_label_info_size_image" />

                <TextView
                    style="@style/TextView.Micro.BlackDisabled"
                    android:text="@string/shop_open_label_info_allowed_file"
                    android:textStyle="bold" />

                <TextView
                    style="@style/TextView.Micro.BlackDisabled"
                    android:text="@string/shop_open_label_info_type_file_image" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_next"
            style="@style/Button.Submit.Green.Full"
            android:text="@string/title_next" />

    </LinearLayout>
</ScrollView>
