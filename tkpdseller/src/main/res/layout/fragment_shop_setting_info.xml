<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            style="@style/ImageView.ShopSettingTitleImage"
            android:src="@drawable/ic_icon_toko" />

        <TextView
            android:id="@+id/welcome_shop_label"
            style="@style/TextView.Title"
            android:layout_marginBottom="@dimen/margin_sm"
            android:gravity="center"
            android:text="@string/hello_x" />

        <TextView
            android:layout_marginBottom="@dimen/margin_large"
            style="@style/TextView.Subheading"
            android:text="@string/label_shop_open_info_title_shop" />



        <com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout
            android:id="@+id/shop_slogan_input_layout"
            android:layout_marginBottom="@dimen/margin_med"
            style="@style/HintTextInputLayout"
            android:hint="@string/label_shop_setting_slogan"
            app:helperEnabled="true"
            app:helper="@string/shop_open_label_slogan_info"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/open_shop_max_slogan_char">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/shop_slogan_input_text"
                style="@style/EditText.ShopSetting"
                android:maxLength="@integer/open_shop_max_slogan_char"
                android:layout_width="match_parent" />
            ​
        </com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout>

        <com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout
            android:id="@+id/shop_desc_input_layout"
            android:layout_marginBottom="@dimen/margin_med"
            style="@style/HintTextInputLayout"
            android:hint="@string/label_shop_setting_desc_shop"
            app:helperEnabled="true"
            app:helper="@string/shop_open_label_description_info"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/open_shop_max_desc_char">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/shop_desc_input_text"
                style="@style/EditText.ShopSetting"
                android:maxLength="@integer/open_shop_max_desc_char"
                android:layout_width="match_parent" />
            ​
        </com.tokopedia.seller.lib.widget.TkpdHintTextInputLayout>

        <TextView
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_gravity="start"
            style="@style/TextView.Caption.BlackSecondary"
            android:text="@string/label_shop_setting_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <FrameLayout
                android:id="@+id/image_picker_container"
                style="@style/View.ShopSetting.ImagePicker">

                <ImageView
                    android:id="@+id/image_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add_photo_box" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/container_info_picker_image"
                style="@style/View.ShopSetting.InfoImagePicker"
                android:layout_toRightOf="@+id/image_picker_container">

                <TextView
                    android:textStyle="bold"
                    style="@style/TextView.Caption.BlackDisabled"
                    android:text="@string/label_shop_setting_info_max_file_size" />

                <TextView
                    android:layout_marginBottom="@dimen/margin_ms"
                    style="@style/TextView.Caption.BlackDisabled"
                    android:text="@string/label_shop_setting_info_size_image" />

                <TextView
                    android:textStyle="bold"
                    style="@style/TextView.Caption.BlackDisabled"
                    android:text="@string/label_shop_setting_info_allowed_file" />

                <TextView
                    style="@style/TextView.Caption.BlackDisabled"
                    android:layout_marginBottom="@dimen/margin_ms"
                    android:text="@string/label_shop_setting_type_file_image" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/container_browse_file"
                style="@style/View.ShopSetting.BrowseImage"
                android:layout_alignBottom="@+id/image_picker_container"
                android:layout_alignLeft="@id/container_info_picker_image">

                <TextView
                    style="@style/TextView.Caption"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/label_shop_setting_browse_file" />
            </FrameLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/button_next"
            style="@style/Button.Submit.Green.Full"
            android:text="@string/title_next" />

    </LinearLayout>
</ScrollView>
