<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/container_tooltip"
        android:background="@drawable/rounded_black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tooltip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_title_topads_statistic"
            android:textSize="10sp"
            android:layout_marginBottom="3dp"
            />


        <TextView
            android:id="@+id/tooltip_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:layout_marginBottom="3dp"
            />
    </LinearLayout>

    <com.tokopedia.seller.lib.williamchart.tooltip.TooltipPointerView
        android:layout_below="@+id/container_tooltip"
        android:id="@+id/tooltip_pointer"
        app:tooltip_pointer_color="@color/black"
        android:layout_width="12dp"
        android:layout_height="6dp" />

</RelativeLayout>