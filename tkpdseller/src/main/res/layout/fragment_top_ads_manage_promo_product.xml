<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <android.support.v4.widget.NestedScrollView
        android:padding="18dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/layout_top_ads_next_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.tokopedia.seller.topads.view.widget.TopAdsCustomRadioGroup
            android:id="@+id/radio_group"
            style="@style/TopAdsCustomRadioGroup">

            <include layout="@layout/include_top_ads_radio_new_group_option" />

            <include layout="@layout/include_top_ads_radio_exist_group_option" />

            <include layout="@layout/include_top_ads_radio_empty_group_option" />
        </com.tokopedia.seller.topads.view.widget.TopAdsCustomRadioGroup>

    </android.support.v4.widget.NestedScrollView>

    <include android:id="@+id/layout_top_ads_next_bottom" layout="@layout/include_top_ads_button_next_bottom" />

</RelativeLayout>