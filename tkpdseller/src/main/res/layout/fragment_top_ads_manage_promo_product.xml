<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.tokopedia.seller.topads.view.widget.TopAdsCustomRadioGroup
            android:id="@+id/radio_group"
            style="@style/TopAdsCustomRadioGroup">

            <include layout="@layout/include_top_ads_radio_new_group_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom = "@dimen/margin_small"/>

            <include layout="@layout/include_top_ads_radio_exist_group_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom = "@dimen/margin_small"/>

            <include layout="@layout/include_top_ads_radio_empty_group_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom = "@dimen/margin_small"/>
        </com.tokopedia.seller.topads.view.widget.TopAdsCustomRadioGroup>

    </ScrollView>

    <include android:id="@+id/layout_top_ads_next_bottom"
        layout="@layout/include_top_ads_button_next_bottom" />

</LinearLayout>