<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_max_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text_max_price"
            style="@style/EditText.Currency"
            android:layout_width="match_parent"
            android:hint="@string/label_top_ads_max_price_hint"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        style="@style/TextView.TopAds.Title"
        android:text="@string/label_top_ads_max_price_description"/>

</LinearLayout>