<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/image_width_l"
        android:layout_height="@dimen/image_width_l"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/ic_badge_gold"
        android:padding="@dimen/padding_vs"
        android:layout_marginRight="@dimen/margin_ms"
        android:layout_marginEnd="@dimen/margin_ms"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Layanan Kargo"
            style="@style/TextView.Subheading.BlackPrimary"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Pilih Paket Pengiriman"
            style="@style/TextView.Caption.BlackSecondary"/>
    </LinearLayout>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_button"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:theme="@style/ColorSwitchCompat"/>
</LinearLayout>