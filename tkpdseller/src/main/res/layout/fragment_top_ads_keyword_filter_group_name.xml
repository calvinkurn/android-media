<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/topads_detail_padding_item"
    android:paddingStart="@dimen/topads_detail_padding_item">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/group_filter_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_group"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingEnd="24dp"
            android:paddingRight="24dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/group_filter_search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_search_black_24dp" />
    </FrameLayout>

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.tokopedia.core.customwidget.SwipeToRefresh>

</LinearLayout>