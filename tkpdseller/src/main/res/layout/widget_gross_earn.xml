<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:padding="@dimen/gmstat_padding_item_left_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Pendapatan Kotor"
        android:textSize="12sp"
        android:textColor="#89000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:id="@+id/grossIncomeHeader"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text" />

    <TextView
        android:text="Rp 999,9jt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="33sp"
        android:textColor="#B2000000"
        android:layout_below="@id/grossIncomeHeader"
        android:id="@+id/text" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/circle_green"
        android:id="@+id/dot"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_below="@+id/text" />

    <TextView
        android:text="26 Jul 2016 - 25 Des 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDescription"
        android:layout_below="@+id/text"
        android:layout_toRightOf="@id/dot"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"/>




</RelativeLayout>