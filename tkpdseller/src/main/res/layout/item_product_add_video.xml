<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_add_video_ll_2_height"
    android:background="@color/white"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/image_width_xl"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/image_add_video_url_container_margin"
        android:layout_marginStart="@dimen/image_add_video_url_container_margin"
        android:layout_weight="0.2">

        <ImageView
            android:id="@+id/image_add_video_url"
            android:layout_width="@dimen/image_width_xl"
            android:layout_height="@dimen/image_width_xl"
            app:srcCompat="@drawable/akun_lainnya" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/image_add_video_url_container_margin"
        android:layout_marginStart="@dimen/image_add_video_url_container_margin"
        android:layout_weight="0.67"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_add_video_url_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lines="2"
            android:textColor="@color/font_black_secondary_54"
            android:textSize="@dimen/text_add_video_url_title_textSize"
            tools:text="Beruang Teddy\n makanya harus makan nasi banyak2 " />

        <TextView
            android:id="@+id/text_add_video_url_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_add_video_url_description_height"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lines="1"
            android:textColor="@color/font_black_disabled_38"
            android:textSize="@dimen/text_add_video_url_description_text_size"
            tools:text="Review produk baru keluaran toko souvenir dan makan nasi" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/image_add_video_url_remove_margin"
        android:layout_marginStart="@dimen/image_add_video_url_remove_margin"
        android:layout_weight="0.13"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_add_video_url_remove"
            android:layout_width="@dimen/image_width_xxs"
            android:layout_height="@dimen/image_width_xxs"
            app:srcCompat="@drawable/ic_delete" />
    </LinearLayout>

</LinearLayout>