<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/gmstat_padding_item_left_right"
    android:paddingLeft="@dimen/gmstat_padding_item_left_right"
    android:paddingRight="@dimen/gmstat_padding_item_left_right"
    android:paddingTop="8dp"
    android:id="@+id/line_chart_container"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.tokopedia.seller.gmstat.library.LoaderTextView
        style="@style/TextView.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Total Pengeluaran TopAds"
        android:minWidth="100dp"
        android:layout_marginBottom="2dp"/>
    <com.tokopedia.seller.gmstat.library.LoaderTextView
        android:id="@+id/tv_amount"
        style="@style/TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="120dp"
        tools:text="Rp900.000"
        android:layout_marginBottom="2dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tokopedia.seller.gmstat.library.LoaderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:minWidth="40dp"
            tools:text="100%"
            tools:textColor="@color/arrow_down"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_marginEnd="@dimen/margin_vs"/>
        <com.tokopedia.seller.gmstat.library.LoaderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:layout_toRightOf="@id/view_arrow_percentage"
            android:layout_marginLeft="5dp"
            tools:text="dari periode sebelumnya" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/vg_date_range">

        <com.tokopedia.seller.gmstat.library.LoaderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:minWidth="100dp"
            tools:text="26 Jul 2016 - 25 Des 2016" />

        <com.tokopedia.seller.gmstat.library.LoaderTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:minWidth="100dp"
            tools:text="26 Jul 2016 - 25 Des 2016" />
    </LinearLayout>

    <com.tokopedia.seller.gmstat.library.LoaderView
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</LinearLayout>