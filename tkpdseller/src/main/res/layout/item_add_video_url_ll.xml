<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@drawable/rounded_grey_add_video_url"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.14">

        <ImageView
            android:id="@+id/image_add_video_url"
            android:layout_width="48dp"
            android:layout_height="46dp"
            app:srcCompat="@drawable/akun_lainnya" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.75"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_add_video_url_title"
            android:layout_width="match_parent"
            android:layout_height="22sp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lines="1"
            android:textColor="@color/black_fifty_four_percent"
            android:textSize="14sp"
            tools:text="Beruang Teddy " />

        <TextView
            android:id="@+id/text_add_video_url_description"
            android:layout_width="match_parent"
            android:layout_height="22sp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lines="1"
            android:textColor="@color/thirty_eight_percent_black"
            android:textSize="11sp"
            tools:text="Review produk baru keluaran toko souvenir dan makan nasi" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_weight="0.11"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_add_video_url_remove"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_close_grey_copy" />
    </LinearLayout>

</LinearLayout>