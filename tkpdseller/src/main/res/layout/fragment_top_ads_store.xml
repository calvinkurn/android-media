<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_top_ads_shop_info"/>

        <include
            layout="@layout/include_top_ads_statistic_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_ads_dashboard_margin_cards"/>

        <android.support.v7.widget.CardView
            style="@style/CardView.TopAds"
            android:layout_marginBottom="@dimen/top_ads_dashboard_margin_bottom_space"
            android:layout_marginTop="@dimen/top_ads_dashboard_margin_cards">

            <include
                layout="@layout/include_top_ads_shop_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>