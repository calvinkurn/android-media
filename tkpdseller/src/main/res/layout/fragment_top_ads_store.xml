<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.core.customwidget.SwipeToRefresh
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/partial_top_ads_shop_info"/>

            <include
                layout="@layout/partial_top_ads_statistic_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/top_ads_dashboard_margin_cards"
                android:layout_marginTop="@dimen/top_ads_dashboard_margin_cards"/>

            <FrameLayout
                android:id="@+id/layout_shop_ad"
                style="@style/LabelLayout.Border"
                android:layout_marginBottom="@dimen/top_ads_dashboard_margin_bottom_space"
                android:visibility="gone">

                <include
                    layout="@layout/partial_top_ads_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_empty_shop_ad"
                style="@style/LabelLayout.Border"
                android:layout_marginBottom="@dimen/top_ads_dashboard_margin_bottom_space"
                android:visibility="gone">

                <include
                    layout="@layout/partial_top_ads_empty_shop_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</com.tokopedia.core.customwidget.SwipeToRefresh>