<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@color/another_grey"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image_add_video_url"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/akun_lainnya" />

    <ImageView
        android:id="@+id/image_add_video_url_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        app:srcCompat="@drawable/ic_close_grey_copy" />

    <TextView
        android:id="@+id/text_add_video_url_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_add_video_url"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@id/image_add_video_url"
        android:lines="1"
        android:textColor="@color/black_fifty_four_percent"
        android:textSize="14sp"
        tools:text="Beruang Teddy " />

    <TextView
        android:id="@+id/text_add_video_url_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_add_video_url"
        android:layout_alignLeft="@id/text_add_video_url_title"
        android:layout_alignStart="@id/text_add_video_url_title"
        android:lines="1"
        android:textColor="@color/thirty_eight_percent_black"
        android:textSize="11sp"
        tools:text="Review produk baru keluaran toko souvenir dan makan nasi" />

</RelativeLayout>