<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="LinearLayout">

    <LinearLayout
        style="@style/LabelLayout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.Small.BlackSecondary"
            android:text="@string/product_label_product_description" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_group_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/bg_line_separator"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.tokopedia.design.text.SpinnerTextView
                android:id="@+id/spinner_text_view_condition"
                style="@style/LabelLayout"
                app:spinner_entries="@array/product_condition_entries"
                app:spinner_hint="@string/product_label_condition"
                app:spinner_values="@array/product_condition_values" />
            <LinearLayout
                style="@style/LabelLayout"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <com.tokopedia.design.text.TkpdHintTextInputLayout
                    android:id="@+id/text_input_layout_description"
                    style="@style/HintTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    app:counterEnabled="true"
                    app:counterMaxLength="@integer/product_max_character_description"
                    android:hint="@string/product_label_product_description">

                    <EditText
                        android:id="@+id/edit_text_description"
                        style="@style/EditText"
                        android:hint="@string/product_label_enter_product_description"
                        android:layout_width="match_parent"
                        android:inputType="textMultiLine"
                        android:maxLength="@integer/product_max_character_description" />

                </com.tokopedia.design.text.TkpdHintTextInputLayout>

                <FrameLayout
                    android:id="@+id/info_icon_add_product_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="@dimen/margin_med"
                    android:paddingLeft="@dimen/padding_vs"
                    android:paddingStart="@dimen/padding_vs"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:foregroundGravity="center">
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/info_icon_add_product"
                        android:layout_width="@dimen/image_medal_size"
                        android:layout_height="@dimen/image_medal_size"
                        android:scaleType="fitXY"
                        android:layout_gravity="end"
                        android:foregroundGravity="center_vertical|right"
                        android:src="@drawable/ic_info"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <com.tokopedia.seller.common.widget.LabelView
            android:id="@+id/label_add_video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:visibility="gone"
            app:content="@string/product_etalase_picker_add_etalase_add_button_dialog"
            app:content_color="@color/tkpd_main_green"
            app:title="@string/product_label_video" />

    </LinearLayout>

</merge>