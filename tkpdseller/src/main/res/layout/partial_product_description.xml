<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="LinearLayout">

    <LinearLayout
        style="@style/LabelLayout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.Small.BlackSecondary"
            android:text="@string/product_label_product_description" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_group_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line_divider"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <com.tokopedia.design.text.SpinnerTextView
            android:id="@+id/spinner_text_view_condition"
            style="@style/LabelLayout"
            app:spinner_entries="@array/product_condition_entries"
            app:spinner_hint="@string/product_label_condition"
            app:spinner_values="@array/product_condition_values" />

        <com.tokopedia.seller.common.widget.LabelView
            android:id="@+id/label_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content="@string/label_add"
            app:content_color="@color/tkpd_main_green"
            app:title="@string/product_label_product_description" />

        <com.tokopedia.seller.common.widget.LabelView
            android:id="@+id/label_add_video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:content="@string/label_add"
            app:content_color="@color/tkpd_main_green"
            app:title="@string/product_label_video"
            tools:visibility="visible" />

        <com.tokopedia.expandable.ExpandableOptionSwitch
            android:id="@+id/expandable_option_switch_pre_order"
            style="@style/LabelLayout"
            app:eo_checked="false"
            app:eo_theme="@style/ExpandableStyle"
            app:eo_title="@string/product_label_preorder">

            <com.tokopedia.design.text.SpinnerCounterInputView
                android:id="@+id/spinner_counter_input_view_pre_order"
                style="@style/LabelLayout.InnerExpandable"
                app:spinner_decimal_entries="@array/product_pre_order_entries"
                app:spinner_decimal_hint="@string/product_label_time_process"
                app:spinner_decimal_spinner_width="100dp"
                app:spinner_decimal_values="@array/product_pre_order_values" />

        </com.tokopedia.expandable.ExpandableOptionSwitch>
    </LinearLayout>

</merge>