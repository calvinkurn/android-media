<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_sm"
        android:gravity="center_vertical">

        <TextView
            style="@style/TextView.Body1.Bold.BlackSecondary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/shop_score_title_widget_home" />

        <TextView
            android:id="@+id/text_view_shop_score"
            style="@style/TextView.Body1.Green"
            tools:text="@string/label_empty_value" />

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="@dimen/image_width_xxxs"
            android:layout_height="@dimen/image_width_xxs"
            android:layout_marginLeft="@dimen/margin_vs"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <com.tokopedia.seller.shopscore.view.widget.ShopScoreMainProgressBarWithLimit
        android:id="@+id/progress_bar_shop_score_with_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>