<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_shop_open_location"
    >

    <android.support.v7.widget.AppCompatImageView
        style="@style/ImageView.ShopSettingTitleImage"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_location_icon"
        android:layout_marginBottom="0dp" />

    <TextView
        style="@style/TextView.TitleBig"
        android:layout_gravity="center_horizontal"
        android:text="@string/shop_open_shipping_location_text"
        android:layout_marginTop="24dp" />

    <TextView
        style="@style/TextView.Small"
        android:lineSpacingExtra="6sp"
        android:gravity="center_horizontal"
        android:text="@string/shop_open_shipping_location_text_desc"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp" />

    <TextView
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="@string/shop_open_shipping_location_text_choose_desc" />


    <FrameLayout
        android:id="@+id/btn_choose_from_address_container"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        style="@style/View.ShopSetting.BrowseImage"
        android:layout_height="@dimen/image_width_m"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/btn_choose_from_address"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextView.Micro"
            android:text="@string/shop_open_choose_from_address_list"
             />
    </FrameLayout>

</merge>