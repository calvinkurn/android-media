<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/gm_tooltip_compare_width"
    android:layout_height="@dimen/gm_tooltip_compare_height"
    android:background="@drawable/tooltip">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingTop="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_circle1"
                android:layout_width="@dimen/gm_tooltip_dot_image"
                android:layout_height="@dimen/gm_tooltip_dot_image"
                android:layout_gravity="center_vertical"
                android:src="@drawable/circle_green" />

            <TextView
                android:id="@+id/tv_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/gm_tooltip_text_compare_margin"
                android:layout_marginStart="@dimen/gm_tooltip_text_compare_margin"
                android:textColor="@color/white_fifty_percent"
                android:textSize="@dimen/gm_tooltip_text_compare_size"
                tools:text="100.000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_circle2"
                android:layout_width="@dimen/gm_tooltip_dot_image"
                android:layout_height="@dimen/gm_tooltip_dot_image"
                android:layout_gravity="center_vertical"
                android:src="@drawable/circle_grey_gmstat" />

            <TextView
                android:id="@+id/tv_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/gm_tooltip_text_compare_margin"
                android:layout_marginStart="@dimen/gm_tooltip_text_compare_margin"
                android:textColor="@color/white_fifty_percent"
                android:textSize="@dimen/gm_tooltip_text_compare_size"
                tools:text="8.000" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>

