<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tkpd_main_green"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_order_widget" />

        <TextView
            style="@style/TextView.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textColor="@color/white"
            tools:text="Order" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_order_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/count_order"
            style="@style/TextView.Display3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            style="@style/TextView.Caption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drawer_title_new_order" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray" />

    <ListView
        android:id="@+id/list_order"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/image_no_result"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_empty_state"
        android:layout_centerInParent="true"/>

</LinearLayout>