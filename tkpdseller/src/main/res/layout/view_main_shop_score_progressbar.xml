<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_shop_score_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.tokopedia.seller.shopscore.view.widget.ShopScoreMainProgressBar
        android:id="@+id/shop_score_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_shop_score_limit" />

    <View
        android:id="@+id/shop_score_view_limit"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/shop_score_progress_bar"
        android:layout_alignTop="@id/shop_score_progress_bar"
        android:layout_below="@id/ic_shop_score_limit"
        android:background="@color/white" />


</RelativeLayout>