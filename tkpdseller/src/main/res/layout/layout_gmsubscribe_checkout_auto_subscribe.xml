<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/check_box_to_open_auto_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/open_auto_subscribe_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gmsubscribe_auto_subscribe_title"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/open_auto_subscribe_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gmsubscribe_auto_subscribe_subtitle"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gm_subscribe_auto_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/grey_300"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gmsubscribe_auto_package_title"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_view_current_auto_package_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gmsubscribe_auto_package_price"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_view_current_auto_package_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gmsubscribe_auto_package_next_subscribe"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_view_current_auto_package_next_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gmsubscribe_auto_package_payment_method"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_view_current_auto_package_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/icon_change_gm_subscribe_auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_edit_pencil"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gmsubscribe_change_auto"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>