<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".goldmerchant.statistic.view.activity.GMStatisticTransactionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.seller.lib.widget.DateLabelView
            android:id="@+id/date_label_view"
            style="@style/LabelLayout.BorderBottom" />

        <com.tokopedia.seller.gmstat.views.widget.TitleCardView
            android:id="@+id/gold_merchant_statistic_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med">

            <com.tokopedia.seller.gmstat.views.widget.LineChartContainerWidget
                android:id="@+id/gold_merchant_line_chart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.tokopedia.seller.lib.williamchart.view.LineChartView
                    android:id="@+id/gm_statistic_transaction_income_graph"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />
            </com.tokopedia.seller.gmstat.views.widget.LineChartContainerWidget>

        </com.tokopedia.seller.gmstat.views.widget.TitleCardView>

        <com.tokopedia.seller.gmstat.views.widget.TitleCardView
            android:id="@+id/not_done_trans_statistic_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tokopedia.seller.gmstat.views.circleprogress.DonutProgressLayout
                    android:id="@+id/gm_statistic_trans_donut_progress_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:donut_pl_amount="200"
                    app:donut_pl_amount_text_size="30sp"
                    app:donut_pl_title="Judul"
                    app:donut_pl_title_text_size="15sp">

                    <com.tokopedia.seller.gmstat.views.circleprogress.DonutProgress
                        android:id="@+id/gm_statistic_trans_donut_progress"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:donut_circle_starting_degree="90"
                        app:donut_finished_color="#00FF00"
                        app:donut_finished_stroke_width="8dp"
                        app:donut_max="100"
                        app:donut_progress="85"
                        app:donut_show_text="false"
                        app:donut_unfinished_color="#FF0000"
                        app:donut_unfinished_stroke_width="8dp" />
                </com.tokopedia.seller.gmstat.views.circleprogress.DonutProgressLayout>

                <include
                    android:id="@+id/onhold_count_unfinished_transaction"
                    layout="@layout/widget_unfinished_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/onhold_amount_unfinished_transaction"
                    layout="@layout/widget_unfinished_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/res_center_count_unfinished_transaction"
                    layout="@layout/widget_unfinished_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.tokopedia.seller.gmstat.views.widget.TitleCardView>

        <com.tokopedia.seller.gmstat.views.widget.TitleCardView
            android:id="@+id/topads_statistic_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.seller.gmstat.views.widget.LineChartContainerWidget
                android:id="@+id/topads_line_chart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hasDescription="true">
                <com.tokopedia.seller.lib.williamchart.view.LineChartView
                    android:id="@+id/gm_statistic_topads_graph"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />
            </com.tokopedia.seller.gmstat.views.widget.LineChartContainerWidget>

        </com.tokopedia.seller.gmstat.views.widget.TitleCardView>

        <com.tokopedia.seller.lib.widget.LabelView
            android:id="@+id/gm_statistic_label_sold_product_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/product_margin_cards"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="@string/gold_merchant_sold_product_list_text" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>