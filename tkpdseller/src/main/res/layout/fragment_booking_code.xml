<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.tokopedia.seller.purchase.detail.activity.BookingCodeActivity">

    <TextView
        android:id="@+id/barcode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/barcode_label_one"
        android:textColor="@color/black_40"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/text_tap_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_toRightOf="@+id/barcode_label"
        android:text="@string/barcode_label_two"
        android:textColor="@color/green_300"
        android:textSize="@dimen/sp_12" />


    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_barcode"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/booking_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="TJNE-8K4LFVPNMT6" />

        <ImageView
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_copy_green"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_8" />

    </LinearLayout>


    <TextView
        android:id="@+id/barcode_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_code"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/rect_yellow"
        android:padding="@dimen/dp_16"
        android:text="@string/barcode_helper"
        android:textColor="@color/black_39" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barcode_helper"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="#fafbfc">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toEndOf="@+id/ic_message"
            android:layout_toRightOf="@+id/ic_message"
            android:background="@color/transparent"
            android:text="@string/message_label"
            android:textColor="@color/black_40"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/ic_message"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:src="@drawable/info_icon" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_message"
            android:layout_margin="@dimen/dp_16" />
    </RelativeLayout>

    <View
        android:id="@+id/filter_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#89000000"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barcode_label"
        android:layout_margin="@dimen/dp_16"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/dp_2"
        app:contentPadding="@dimen/dp_16">

        <ImageView
            android:id="@+id/barcode_img"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_width="256dp"
            android:layout_height="61dp"
            android:contentDescription="@string/barcode_image_content_description" />

    </android.support.v7.widget.CardView>

</RelativeLayout>