<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/check_promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_med"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/check_promo"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/status_active_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/green_circle"/>

            <TextView
                android:id="@+id/status_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:textSize="14sp"
                tools:text="@string/app_name"/>
        </LinearLayout>

        <TextView
            android:id="@+id/price_promo_per_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:textSize="14sp"
            tools:text="@string/app_name"/>

        <LinearLayout
            android:id="@+id/progress_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_vs"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/promo_price_used"
                    style="@style/TextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/label_top_ads_daily_spend"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/total_price_promo"
                    style="@style/TextView"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    tools:text="@string/app_name"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>