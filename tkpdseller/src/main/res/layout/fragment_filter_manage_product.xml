<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_submit"
        android:orientation="vertical">

        <com.tokopedia.seller.common.widget.LabelView
            android:id="@+id/etalase"
            style="@style/LabelLayout.BorderBottom"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="@string/title_etalase" />

        <com.tokopedia.seller.common.widget.LabelView
            android:id="@+id/category"
            style="@style/LabelLayout.BorderBottom"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="@string/title_category" />

        <com.tokopedia.seller.common.widget.LabelView
            android:id="@+id/condition"
            style="@style/LabelLayout.BorderBottom"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="@string/title_condition" />

        <com.tokopedia.seller.common.widget.LabelView
            android:id="@+id/catalog"
            style="@style/LabelLayout.BorderBottom"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="@string/title_catalog" />

        <com.tokopedia.seller.common.widget.LabelView
            android:id="@+id/product_picture"
            style="@style/LabelLayout.BorderBottom"
            app:content_color="@color/tkpd_main_green"
            app:label_show_arrow="true"
            app:title="@string/title_picture_product" />
    </LinearLayout>

    <Button
        android:id="@+id/button_submit"
        style="@style/Button.Submit.Green"
        android:layout_alignParentBottom="true"
        android:text="@string/title_save" />

</RelativeLayout>