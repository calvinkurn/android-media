<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/top_ads_dashboard_padding_cards">

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/icon_bca"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_ads_dashboard_padding_cards"
        android:layout_marginStart="@dimen/top_ads_dashboard_padding_cards"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            style="@style/TextView.TopAds.Title"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/text_view_promoted"
            style="@style/TextView.TopAds.Body.Promoted"
            tools:text="@string/label_top_ads_promoted"/>

        <TextView
            android:id="@+id/text_view_group_name"
            style="@style/TextView.TopAds.Body.Promoted"
            tools:text="@string/app_name"/>
    </LinearLayout>
</LinearLayout>