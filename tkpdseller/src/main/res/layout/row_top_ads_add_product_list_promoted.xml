<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkbox_top_ads_add_product_list_promoted"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/top_ads_add_product_list_description_promoted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/checkbox_top_ads_add_product_list_promoted"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@id/checkbox_top_ads_add_product_list_promoted"
        android:textColor="@color/grey_300"
        android:textSize="16sp"
        tools:text="Tiento Baselayer Manset Rash Guard \nCompression Long Pants Black Red" />

    <TextView
        android:id="@+id/top_ads_add_product_list_snippet_promoted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/top_ads_add_product_list_description_promoted"
        android:layout_alignStart="@id/top_ads_add_product_list_description_promoted"
        android:layout_below="@id/top_ads_add_product_list_description_promoted"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/thirty_eight_percent_black"
        android:textSize="11sp"
        tools:text="[Nama_Grup]" />

    <View
        android:id="@+id/empty_space_promoted"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/top_ads_add_product_list_description_promoted"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#1E000000" />

</RelativeLayout>