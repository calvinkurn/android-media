<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_small"
    android:paddingRight="@dimen/margin_small"
    android:paddingTop="@dimen/margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_vs"
            android:text="@string/title_desc"
            android:textColor="#333333"
            android:textSize="@dimen/fontm"
            android:textStyle="bold" />

        <com.tokopedia.seller.opportunity.customview.DescriptionTextView
            android:id="@id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descriptions"
            android:textColor="#464646"
            android:textIsSelectable="true"
            android:textSize="@dimen/fonts"
            android:autoLink="all"/>

    </LinearLayout>

    <ImageView
        android:id="@id/iv_toggle"
        android:layout_width="@dimen/tab_height"
        android:layout_height="@dimen/tab_height"
        android:layout_gravity="center"
        android:background="@drawable/overflow_selected"
        android:contentDescription="@string/image_product_desc"
        android:padding="@dimen/padding_small" />

</LinearLayout>