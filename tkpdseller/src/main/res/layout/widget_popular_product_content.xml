<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/gmstat_padding_item_top_transaction"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/image_popular_product"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="@dimen/gmstat_padding_item_left_right"
        android:layout_marginStart="@dimen/gmstat_padding_item_left_right"
        android:layout_width="96dp"
        android:layout_height="96dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_popular_product"
        android:layout_marginTop="10dp"
        android:textColor="#89000000"
        android:textSize="12sp"
        android:text="@string/gm_statistic_most_popular_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toRightOf="@+id/image_popular_product"
        android:layout_toEndOf="@+id/image_popular_product" />

    <TextView
        android:id="@+id/tv_popular_product"
        android:layout_marginTop="4dp"
        android:textColor="#B2000000"
        android:textSize="14sp"
        tools:text="Kaos Reglan bahan Gildan Super\nNyaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_alignLeft="@id/text_popular_product"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_below="@+id/text_popular_product"
        android:layout_toRightOf="@+id/image_popular_product"
        android:layout_toEndOf="@+id/image_popular_product" />

    <TextView
        android:id="@+id/tv_no_of_selling"
        android:textColor="#B2000000"
        android:textSize="24sp"
        tools:text="999,9jt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_popular_product"
        android:layout_marginRight="@dimen/gmstat_padding_item_left_right"
        android:layout_alignBottom="@+id/image_popular_product"
        android:layout_toRightOf="@+id/image_popular_product"
        android:layout_toEndOf="@+id/image_popular_product" />

    <TextView
        android:textColor="#61000000"
        android:textSize="12sp"
        android:text="@string/gm_statistic_x_sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_alignBaseline="@+id/tv_no_of_selling"
        android:layout_alignBottom="@+id/tv_no_of_selling"
        android:layout_toRightOf="@+id/tv_no_of_selling"
        android:layout_toEndOf="@+id/tv_no_of_selling" />

    <TextView
        android:text="@string/gm_statistic_last_thirty_days_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="#61000000"
        android:textStyle="italic"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/image_popular_product"
        android:layout_alignLeft="@+id/image_popular_product"
        android:layout_alignStart="@+id/image_popular_product" />

</RelativeLayout>