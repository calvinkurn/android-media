<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/black_twenty_percent"
                android:centerY="0.5"
                android:endColor="@color/black_twenty_percent"
                android:startColor="@color/black_twenty_percent" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dip" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/tkpd_main_green"
                    android:startColor="@color/tkpd_main_green" />
            </shape>
        </clip>
    </item>
</layer-list>