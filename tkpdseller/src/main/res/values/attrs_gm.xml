<resources>
    <declare-styleable name="TitleCardView">
        <attr name="title" format="string" />
        <attr name="title_size" format="dimension" />
        <attr name="icon" format="reference" />
        <attr name="loading_layout" format="reference" />
        <attr name="empty_layout" format="reference" />
        <attr name="use_gradient_title_loading" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LoadingStateView">
        <attr name="lsv_loading_layout" format="reference" />
        <attr name="lsv_empty_layout" format="reference" />
        <attr name="lsv_state" format="integer" />
    </declare-styleable>

    <declare-styleable name="ArrowPercentageView">
        <attr name="arrow_percentage_value" format="float" />
        <attr name="arrow_percentage_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GMStatisticSummaryView">
        <attr name="gm_statistic_summary_title" format="string" />
        <attr name="gm_statistic_summary_content" format="string" />
        <attr name="gm_statistic_summary_percentage" format="float" />
        <attr name="gm_statistic_summary_percentage_size" format="dimension" />
    </declare-styleable>
</resources>
