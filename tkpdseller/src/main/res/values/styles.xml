<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Wholesale">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/wholesale_color</item>
    </style>

    <style name="TextView.TopAds">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_seventy_percent</item>
    </style>

    <style name="TextView.TopAds.Headline">
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
        <item name="android:textColor">@color/font_top_ads_green</item>
        <item name="android:text">@string/top_ads_statistic_info_default_value</item>
    </style>

    <style name="TextView.TopAds.Caption1">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/font_top_ads_black_54</item>
    </style>

    <style name="TextView.TopAds.Caption1.Gray">
        <item name="android:textColor">@color/thirty_eight_percent_black</item>
    </style>

    <style name="TextView.TopAds.Title">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextView.TopAds.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TopAds.Title.Green">
        <item name="android:textColor">@color/font_top_ads_green</item>
    </style>

    <style name="TextView.TopAds.Title.Gray">
        <item name="android:textColor">@color/font_top_ads_black_54</item>
    </style>

    <style name="TextView.TopAds.Title.Black">
        <item name="android:textColor">@color/font_top_ads_black_70</item>
    </style>

    <style name="TextView.TopAds.Body">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextView.TopAds.Body.Gray">
        <item name="android:textColor">@color/font_top_ads_black_54</item>
    </style>

    <style name="TextView.TopAds.Body.LightGray">
        <item name="android:textColor">@color/font_top_ads_black_38</item>
    </style>

    <style name="TextView.TopAds.Body.Black">
        <item name="android:textColor">@color/font_top_ads_black_70</item>
    </style>

    <style name="TextView.TopAds.Body.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TopAds.Body.Green">
        <item name="android:textColor">@color/font_top_ads_green</item>
    </style>

    <style name="TextView.TopAds.Body.Promoted">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/blue_link</item>
    </style>

    <style name="TextView.infoInputType">
        <item name="android:textColor">@color/black_fifty_four_percent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/color_state_topads_disable_text</item>
    </style>

    <style name="EditText.Date">
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/green_200</item>
    </style>


    <style name="EditText.Currency">
        <item name="android:inputType">number</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:padding">12dp</item>`
    </style>

    <style name="TopAdsRadioButton" parent="@style/RadioButton">
        <item name="android:button">@drawable/top_ads_set_date_radio_button</item>
        <item name="android:textColor">@color/font_top_ads_black_70</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Button.Submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxHeight">52dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Button.Submit.Orange">
        <item name="android:background">@drawable/bg_button_orange</item>
    </style>
    <style name="Button.Submit.Green">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textColor">@color/text_submit_button</item>
    </style>

    <style name="Button.Submit.White">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/black_fifty_four_percent</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageButton.Counter">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ImageViewStatus">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/ic_status_green</item>
    </style>

    <style name="Fab">
        <item name="android:id">@id/fab_speed_dial</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/green_500</item>
        <item name="fabSize">normal</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
    </style>

    <style name="LabelLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingLeft">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingRight">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingBottom">@dimen/top_ads_dashboard_padding_cards</item>
    </style>

    <style name="LabelLayoutWithBorder" parent="LabelLayout">
        <item name="android:background">@drawable/border_background_view_topads</item>
    </style>

    <style name="LabelLayoutWithoutBorder" parent="LabelLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="LabelLayoutWithBorderBottom" parent="LabelLayout">
        <item name="android:background">@drawable/border_background_bottom</item>
    </style>

    <style name="LabelLayoutInnerExpandable" parent="LabelLayout">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/product_inner_expandable_padding</item>
        <item name="android:paddingRight">@dimen/product_inner_expandable_padding</item>
        <item name="android:paddingTop">@dimen/product_inner_expandable_padding</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="LabelLayoutWithoutPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="LabelLayoutWithoutPadding.White">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ColorSwitchCompat">
        <item name="colorControlActivated">@color/tkpd_main_green</item>
    </style>

    <style name="TopAdsProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/top_ads_progressbar</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>

    <style name="GMSubscribeContentTextviewSmall" parent="TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gmsubscribe_autosubscribe_title_content</item>
    </style>

    <style name="GMSubscribeContentTextviewMedium" parent="TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gmsubscribe_content_textview_color</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">@color/tkpd_main_green</item>
    </style>

    <style name="TabBar">
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="EditText.GreenHighlight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHighlight">@color/font_top_ads_green</item>
        <item name="android:textColor">@drawable/color_state_topads_disable_text</item>
    </style>

    <style name="TopAdsRadioExpandView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/top_ads_textinput_margin_offset</item>
        <item name="android:layout_marginRight">@dimen/top_ads_textinput_margin_offset</item>
        <item name="android:theme">@style/TextInputLayoutColorLine</item>
    </style>

    <style name="TextInputLayoutColorLine" parent="Theme.Design.Light"> <!-- stackoverflow.com/questions/35767158/ -->
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/font_top_ads_green</item>
        <item name="colorControlHighlight">@color/font_top_ads_green</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/tkpd_main_green</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/black_fifty_four_percent</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout.VerySmall">
        <item name="android:textSize">@dimen/fontvs</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="EditText.GreenHighlight.TopAdsCustomAutoCompleteTextView">
        <item name="android:drawableRight">@drawable/ic_close_green_wpadding</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="TopAdsCustomRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ExpandableStyle" parent="style_expandable_option_default">
        <item name="eo_header_style">@style/ExpandableHeaderStyle</item>
        <item name="eo_text_option_style">@style/TextView.TopAds.Title.Black</item>
        <item name="eo_switch_style">@style/ExpandableSwitchStyle</item>
    </style>

    <style name="ExpandableHeaderStyle" parent="eo_header_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ExpandableSwitchStyle" parent="eo_switch_style">
        <item name="theme">@style/ColorSwitchCompat</item>
    </style>

    <style name="BasicThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/tkpd_main_green</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:spinnerItemStyle">?android:attr/spinnerItemStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Tokopedia</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Tokopedia</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Tokopedia</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Tokopedia</item>
        <item name="actionModeBackground">@color/tkpd_main_green</item>
        <item name="android:actionModeBackground">@color/tkpd_main_green</item>
        <item name="android:actionModeSplitBackground">@color/tkpd_main_green</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tokopedia
        </item>
        <item name="android:homeAsUpIndicator">@drawable/ic_new_action_back</item>
        <item name="android:windowBackground">@color/tkpd_bg_color_grery</item>
        <item name="android:colorBackground">@color/tkpd_bg_color_grery</item>
        <!-- Remove shadow from action bar -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:colorPrimary">@color/tkpd_dark_green</item>
        <item name="android:statusBarColor">@color/green_600</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <item name="android:actionModeStyle">@style/CustomActionMode</item>
        <item name="actionModeStyle">@style/CustomActionMode</item>
        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

</resources>