<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="TextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="TextView.TopAdsListTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_seventy_percent</item>
    </style>

    <style name="TextView.TopAdsListContent">
        <item name="android:textColor">@color/black_fifty_four_percent</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TextView.TopAdsShopTitle">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TopAdsShopContent">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/trans_black_40</item>
    </style>

    <style name="TextView.TopAdsDate">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/tkpd_main_green</item>
    </style>

    <style name="TextView.DashboardStatisticTitle">trans_black_90
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/trans_black_40</item>
    </style>

    <style name="TextView.DashboardStatisticContent">
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
        <item name="android:textColor">@color/green_200</item>
        <item name="android:text">@string/top_ads_statistic_info_default_value</item>
    </style>

    <style name="TextView.ListSummary">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/green_200</item>
        <item name="android:text">@string/top_ads_statistic_info_default_value</item>
    </style>

    <style name="TextView.Promoted">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/blue_link</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText.Date">
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/green_200</item>
    </style>

    <style name="EditText.Currency">
        <item name="android:inputType">number</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Button.TopAds" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">52dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/bg_rounded_corners</item>
    </style>

    <style name="FabSpeedDial">
        <item name="android:id">@id/fab_speed_dial</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fabBackgroundTint">@color/green_500</item>
        <item name="fabGravity">bottom_end</item>
        <item name="miniFabBackgroundTint">@color/mini_fab_title_background_tint</item>
        <item name="miniFabDrawableTint">@android:color/white</item>
        <item name="miniFabTitleTextColor">@android:color/white</item>
        <item name="touchGuardDrawable">@drawable/background_blur</item>
    </style>

    <style name="LabelLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingLeft">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingRight">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingBottom">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ListViewTopAdsAdStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingLeft">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingRight">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingBottom">@dimen/top_ads_dashboard_padding_cards_small</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ColorSwitchCompat">
        <item name="colorControlActivated">@color/tkpd_main_green</item>
    </style>
</resources>