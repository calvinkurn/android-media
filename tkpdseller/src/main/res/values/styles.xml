<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditText.Date">
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/green_200</item>
    </style>

    <style name="ImageViewStatus">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/ic_status_green</item>
    </style>

    <style name="Fab">
        <item name="android:id">@id/fab_speed_dial</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/green_500</item>
        <item name="fabSize">normal</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
    </style>

    <style name="LabelLayout.Border">
        <item name="android:background">@drawable/border_background_view_topads</item>
    </style>

    <style name="LabelLayout.BorderBottom">
        <item name="android:background">@drawable/bg_border_bottom</item>
    </style>

    <style name="LabelLayout.BorderTop">
        <item name="android:background">@drawable/bg_border_top</item>
    </style>

    <style name="BaseCardViewLayoutMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="CardViewLayoutMatchParent" parent="BaseCardViewLayoutMatchParent">
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:layout_marginRight">-2dp</item>
    </style>

    <style name="LabelLayout.InnerExpandable">
        <item name="android:paddingLeft">@dimen/product_inner_expandable_padding</item>
        <item name="android:paddingRight">@dimen/product_inner_expandable_padding</item>
        <item name="android:paddingTop">@dimen/product_inner_expandable_padding</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="LabelLayout.NoPadding">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ColorSwitchCompat">
        <item name="colorControlActivated">@color/tkpd_main_green</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">@color/tkpd_main_green</item>
    </style>

    <style name="TabBar">
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="TabBar.WhiteSeller">
        <item name="tabTextColor">@color/tkpd_grey_text</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/tkpd_main_green</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/tkpd_main_green</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ExpandableStyle" parent="style_expandable_option_default">
        <item name="eo_text_option_style">@style/TextView.Title</item>
        <item name="eo_header_style">@style/ExpandableHeaderStyleNoPadding</item>
        <item name="eo_switch_style">@style/ExpandableSwitchStyle</item>
    </style>

    <style name="ExpandableStyleNoItemPadding" parent="style_expandable_option_default">
        <item name="eo_header_style">@style/ExpandableHeaderStylePadding</item>
        <item name="eo_text_option_style">@style/TextView.Title</item>
        <item name="eo_switch_style">@style/ExpandableSwitchStyle</item>
    </style>

    <style name="ExpandableHeaderStylePadding" parent="eo_header_style">
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/margin_small_sm</item>
        <item name="android:paddingBottom">@dimen/margin_small_sm</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ExpandableHeaderStyleNoPadding" parent="eo_header_style">
        <item name="android:paddingLeft">@dimen/no_margin</item>
        <item name="android:paddingRight">@dimen/no_margin</item>
        <item name="android:paddingTop">@dimen/no_margin</item>
        <item name="android:paddingBottom">@dimen/no_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ExpandableSwitchStyle" parent="eo_switch_style">
        <item name="theme">@style/ColorSwitchCompat</item>
    </style>

    <style name="BottomSheetBuilder.DialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetBuilder.BottomSheetStyle</item>
    </style>

    <style name="BottomSheetBuilder.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/white</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.ShopSettingTitleImage">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="TextInputLayout.ShopSetting">
        <item name="hintTextAppearance">@style/TextAppearence.App.TextInputLayout</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">48</item>
        <item name="counterTextAppearance">@style/ShopOpenCounterTextInputStyle</item>
    </style>

    <style name="TextInputLayout.ShopSetting.DescShop">
        <item name="counterMaxLength">140</item>
    </style>


    <style name="EditText.ShopSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textColorHint">@color/black_38</item>
    </style>

    <style name="View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="View.ShopSetting">
        <item name="android:background">@drawable/rounded_corner_black_shop_open</item>
    </style>

    <style name="View.ShopSetting.ImagePicker">
        <item name="android:layout_width">126dp</item>
        <item name="android:layout_height">126dp</item>
    </style>

    <style name="View.ShopSetting.BrowseImage">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="View.ShopSetting.InfoImagePicker">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:background">@drawable/background_info_image_picker</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShopOpenCounterTextInputStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:textSize">12sp</item>
        <!--other parameters that you want to change -->
    </style>

    <style name="helperTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/font_black_secondary_54</item>
    </style>

    <style name="successTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/tkpd_main_green</item>
    </style>

    <style name="HintTextInputLayout" parent="TextInputLayout">
        <item name="defaultTextColorLabel">@color/font_black_secondary_54</item>
        <item name="focusedTextColorLabel">@color/font_black_secondary_54</item>
        <item name="disabledTextColorLabel">@color/font_black_secondary_54</item>
        <item name="android:theme">@style/HintTextInputLayoutColorLine</item>
    </style>

    <style name="HintTextInputLayoutColorLine" parent="TextInputLayoutColorLine">
        <item name="android:textColorHint">@color/grey_300</item>
    </style>

</resources>