<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.TopAds">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_seventy_percent</item>
    </style>

    <style name="TextView.TopAds.Headline">
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
        <item name="android:textColor">@color/font_top_ads_green</item>
        <item name="android:text">@string/top_ads_statistic_info_default_value</item>
    </style>

    <style name="TextView.TopAds.Caption1">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/font_top_ads_black_54</item>
    </style>

    <style name="TextView.TopAds.Title">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextView.TopAds.Title.One">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TopAds.Title.Two">
        <item name="android:textColor">@color/font_top_ads_green</item>
    </style>

    <style name="TextView.TopAds.Body">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextView.TopAds.Body.Small1">
        <item name="android:textColor">@color/font_top_ads_black_70</item>
    </style>

    <style name="TextView.TopAds.Body.Small2">
        <item name="android:textColor">@color/font_top_ads_black_54</item>
    </style>

    <style name="TextView.TopAds.Body.Small3">
        <item name="android:textColor">@color/font_top_ads_black_70</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TopAds.Body.Small4">
        <item name="android:textColor">@color/font_top_ads_green</item>
    </style>

    <style name="TextView.TopAds.Body.Promoted">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/blue_link</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText.Date">
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">@color/green_200</item>
    </style>

    <style name="EditText.Currency">
        <item name="android:inputType">number</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:padding">12dp</item>`
    </style>

    <style name="TopAdsRadioButton" parent="@style/RadioButton">
        <item name="android:button">@drawable/top_ads_set_date_radio_button</item>
        <item name="android:textColor">@color/font_top_ads_black_70</item>
    </style>

    <style name="Button.TopAds" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:background">@drawable/bg_button_orange</item>
    </style>

    <style name="Button.TopAds.Submit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">52dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:background">@drawable/bg_button_orange</item>
    </style>

    <style name="Button.TopAds.Submit.Green">
        <item name="android:background">@drawable/bg_button_green</item>
    </style>

    <style name="ImageViewStatus">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/ic_status_green</item>
    </style>

    <style name="Fab">
        <item name="android:id">@id/fab_speed_dial</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/green_500</item>
        <item name="fabSize">normal</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
    </style>

    <style name="FabSpeedDial">
        <item name="android:id">@id/fab_speed_dial</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fabBackgroundTint">@color/green_500</item>
        <item name="fabGravity">bottom_end</item>
        <item name="miniFabBackgroundTint">@color/mini_fab_title_background_tint</item>
        <item name="miniFabDrawableTint">@android:color/white</item>
        <item name="miniFabTitleTextColor">@android:color/white</item>
        <item name="touchGuardDrawable">@drawable/background_blur</item>
    </style>

    <style name="LabelLayoutWithBorder" parent="LabelLayout">
        <item name="android:background">@drawable/border_background_view_topads</item>
    </style>

    <style name="LabelLayoutWithoutBorder" parent="LabelLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="LabelLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingLeft">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingRight">@dimen/top_ads_dashboard_padding_cards</item>
        <item name="android:paddingBottom">@dimen/top_ads_dashboard_padding_cards</item>
    </style>

    <style name="ColorSwitchCompat">
        <item name="colorControlActivated">@color/tkpd_main_green</item>
    </style>

    <style name="TopAdsProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/top_ads_progressbar</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">3dip</item>
    </style>

    <style name="GMSubscribeContentTextviewSmall" parent="TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gmsubscribe_autosubscribe_title_content</item>
    </style>

    <style name="GMSubscribeContentTextviewMedium" parent="TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gmsubscribe_content_textview_color</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">@color/tkpd_main_green</item>
    </style>

    <style name="TabBar">
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
</resources>