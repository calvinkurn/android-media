<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.seller">

    <application
        android:allowBackup="true"
        android:label="@string/app_name">
        <!-- Product -->
        <!-- Product Manage -->
        <activity
            android:name=".product.category.view.activity.CategoryPickerActivity"
            android:label="@string/title_activity_category_picker"
            android:screenOrientation="portrait" >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_product_category_picker"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".product.category.view.activity.CategoryDynamicPickerActivity"
            android:label="@string/title_activity_category_picker"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:path="@string/path_category_dynamic_picker"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".product.etalase.view.activity.EtalasePickerActivity"
            android:label="@string/product_title_activity_etalase_picker"
            android:screenOrientation="portrait" >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_product_etalase_picker"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".product.draft.view.activity.ProductDraftListActivity"
            android:exported="true"
            android:label="@string/title_activity_draft_product"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />
        <activity
            android:name=".product.etalase.view.activity.EtalaseDynamicPickerActivity"
            android:label="@string/product_title_activity_etalase_picker"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:path="@string/path_etalase_dynamic_picker"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity android:name=".seller.info.view.activity.SellerCenterActivity"
            android:theme="@style/Theme.White"
            android:label="@string/title_activity_seller_center"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".purchase.detail.activity.OrderHistoryActivity"
            android:label="@string/transaction_title_activity_order_history"
            android:theme="@style/Theme.White">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_order"
                    android:path="@string/path_track"/>

            </intent-filter>
        </activity>
    </application>

</manifest>

