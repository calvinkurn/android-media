<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/partial_empty_feed">

    <View
        android:id="@+id/top_shadow"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:visibility="gone"
        android:background="@drawable/shadow_bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="50dp">

        <ImageView
            android:layout_width="@dimen/empty_kol_img_width"
            android:layout_height="@dimen/empty_kol_img_height"
            app:srcCompat="@drawable/ic_empty_state_cactus"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/new_margin_sm"
            android:layout_marginLeft="@dimen/new_margin_big" android:layout_marginStart="@dimen/new_margin_big"
            android:layout_marginRight="@dimen/new_margin_big" android:layout_marginEnd="@dimen/new_margin_big"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_kol_post"
            android:fontFamily="sans-serif"
            android:textColor="@color/font_black_disabled_38"
            android:textSize="@dimen/font_title"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/new_margin_small"
            android:layout_marginBottom="@dimen/new_margin_sm"
            android:layout_marginLeft="@dimen/new_margin_big" android:layout_marginStart="@dimen/new_margin_big"
            android:layout_marginRight="@dimen/new_margin_big" android:layout_marginEnd="@dimen/new_margin_big"/>
    </LinearLayout>

</LinearLayout>