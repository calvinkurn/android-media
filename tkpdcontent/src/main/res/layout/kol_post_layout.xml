<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:id="@+id/top_shadow"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:visibility="visible"
        android:background="@drawable/shadow_bottom"/>

    <RelativeLayout
        android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_top_bottom">

        <include
            android:id="@+id/kol_header"
            layout="@layout/kol_post_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/tooltip_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kol_header"
            android:adjustViewBounds="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/tooltip_area"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tooltip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/black_tooltip"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="@dimen/new_margin_med" android:paddingStart="@dimen/new_margin_med"
                    android:paddingRight="@dimen/new_margin_sm" android:paddingEnd="@dimen/new_margin_sm"
                    android:paddingBottom="@dimen/padding_ms"
                    android:paddingTop="@dimen/padding_ms"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"
                    android:textStyle="normal"
                    tools:text="Rp 249000 - Lihat Produk" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/kol_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tooltip_image"
            android:padding="@dimen/padding_small"
            android:textColor="@color/black_54"
            android:textSize="@dimen/font_small"
            android:textStyle="normal"
            android:lineSpacingExtra="5sp"
            tools:text="The snapback’s predecessor, the baseball cap, must be proud of its stylish spawn. Compared to fitted baseball caps worn by pro players, snapback are less expensive and much more attuned to contemporary urban culture. But earliest versions of the snapbac… Read More" />

        <View
            android:id="@+id/separator3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/kol_text"
            android:background="@color/grey_300" />

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_height"
            android:layout_below="@id/separator3"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/like_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_small"
                    app:srcCompat="@drawable/ic_thumb" />

                <TextView
                    android:id="@+id/like_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/like_icon"
                    android:layout_toRightOf="@id/like_icon"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/action_like"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/font_small"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/comment_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/comment_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_small"
                    app:srcCompat="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/comment_icon"
                    android:layout_toRightOf="@id/comment_icon"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="6sp"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/font_small"
                    android:textStyle="normal"
                    tools:text="935" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>