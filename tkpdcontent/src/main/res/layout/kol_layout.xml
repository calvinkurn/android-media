<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_sm"
                android:background="@color/white"
                android:orientation="vertical">

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        />

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_small"
        android:textColor="@color/black_70"
        android:textSize="@dimen/font_small"
        tools:text="Rekomendasi untuk Anda"/>

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title"
        android:background="@color/grey_300"
        />

    <include
        android:id="@+id/kol_header"
        layout="@layout/kol_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title" />

    <RelativeLayout
        android:id="@+id/tooltip_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kol_header"
        android:adjustViewBounds="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:id="@+id/tooltip_area"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/tooltip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/black_tooltip"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="6sp"
                android:padding="@dimen/padding_vs"
                android:textColor="@color/white"
                android:textSize="@dimen/font_micro"
                android:textStyle="normal"
                tools:text="Rp 249000 - Lihat Produk"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/kol_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tooltip_image"
        android:padding="@dimen/padding_small"
        android:textColor="@color/black_54"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        tools:text="The snapback’s predecessor, the baseball cap, must be proud of its stylish spawn. Compared to fitted baseball caps worn by pro players, snapback are less expensive and much more attuned to contemporary urban culture. But earliest versions of the snapbac… Read More"/>

    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/kol_text"
        android:background="@color/grey_300"
        />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_below="@id/separator3"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/like_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_small"
                android:src="@drawable/ic_thumb"
                />

            <TextView
                android:id="@+id/like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/like_icon"
                android:layout_toRightOf="@id/like_icon"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="6sp"
                android:text="@string/action_like"
                android:textColor="@color/black_54"
                android:textSize="@dimen/font_small"
                android:textStyle="normal"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/comment_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_small"
                android:src="@drawable/ic_comment"
                />

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/comment_icon"
                android:layout_toRightOf="@id/comment_icon"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/black_54"
                android:textSize="@dimen/font_small"
                android:textStyle="normal"
                tools:text="935"
                />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/footer"
        android:background="@color/grey_300"
        />
</RelativeLayout>