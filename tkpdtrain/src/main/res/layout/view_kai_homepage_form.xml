<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_med">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_one_way_trip"
            style="@style/ButtonRound"
            android:layout_marginEnd="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_vs"
            android:text="Sekali Jalan" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_round_trip"
            style="@style/ButtonRound"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginStart="@dimen/margin_vs"
            android:text="Pulang Pergi" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sm"
        android:background="@drawable/bg_flight_dashboard_destination_arrival"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_origin_station"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="beforeDescendants"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_med"
                android:paddingEnd="@dimen/padding_med"
                android:paddingLeft="@dimen/padding_med"
                android:paddingRight="@dimen/padding_med"
                android:paddingStart="@dimen/padding_med"
                android:paddingTop="@dimen/padding_med">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vvs"
                    android:gravity="left"
                    android:text="Dari"
                    style="@style/TextView.Micro"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_origin_station_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:hint="Kota/Stasiun Asal"
                    android:maxLines="2"
                    android:textColorHint="@color/grey_400"
                    style="@style/TextView.Small" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_line_separator" />

            <LinearLayout
                android:id="@+id/layout_destination_station"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:descendantFocusability="beforeDescendants"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_med"
                android:paddingEnd="@dimen/padding_med"
                android:paddingLeft="@dimen/padding_med"
                android:paddingRight="@dimen/padding_med"
                android:paddingStart="@dimen/padding_med"
                android:paddingTop="@dimen/padding_med">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vvs"
                    android:gravity="right"
                    android:text="Tujuan"
                    style="@style/TextView.Micro" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_destination_station_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint="Kota/Statiun Tujuan"
                    android:maxLines="2"
                    android:textColorHint="@color/grey_400"
                    style="@style/TextView.Small" />

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_reverse_origin_destination"
            android:layout_width="@dimen/image_width_m"
            android:layout_height="@dimen/image_width_m"
            android:layout_gravity="center"
            android:rotation="90"
            app:srcCompat="@drawable/ic_flight_reverse" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <com.tokopedia.tkpdtrain.common.presentation.TextInputView
            android:id="@+id/text_input_view_date_departure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/margin_vs"
            android:paddingLeft="@dimen/margin_sm"
            android:paddingRight="@dimen/margin_sm"
            android:paddingTop="@dimen/margin_ms"
            app:tiv_icon="@drawable/ic_calendar_general"
            app:tiv_remove_background="true"
            app:tiv_title_text="Tanggal Pergi" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/bg_line_separator" />

        <com.tokopedia.tkpdtrain.common.presentation.TextInputView
            android:id="@+id/text_input_view_date_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/margin_vs"
            android:paddingLeft="@dimen/margin_sm"
            android:paddingRight="@dimen/margin_sm"
            android:paddingTop="@dimen/margin_ms"
            android:visibility="gone"
            app:tiv_icon="@drawable/ic_calendar_general"
            app:tiv_remove_background="true"
            app:tiv_title_text="Tanggal Pulang"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:id="@+id/separator_date_return"
            android:background="@drawable/bg_line_separator" />

        <com.tokopedia.tkpdtrain.common.presentation.TextInputView
            android:id="@+id/text_input_view_passenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/margin_vs"
            android:paddingLeft="@dimen/margin_sm"
            android:paddingRight="@dimen/margin_sm"
            android:paddingTop="@dimen/margin_ms"
            app:tiv_icon="@drawable/ic_flight_passenger"
            app:tiv_remove_background="true"
            app:tiv_title_text="Penumpang" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/bg_line_separator" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_search_ticket"
            style="@style/Button.Submit.Orange"
            android:layout_marginTop="@dimen/margin_med"
            android:text="Cari Tiket" />

        <!--Banner disini-->

    </LinearLayout>

</LinearLayout>
