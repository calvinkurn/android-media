<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_32" android:paddingStart="@dimen/dp_32"
    android:paddingEnd="@dimen/dp_32" android:paddingRight="@dimen/dp_32"
    android:background="@color/white"
    android:id="@+id/partial_empty_feed"
    android:layout_marginBottom="@dimen/dp_8">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/img_height"
        app:srcCompat="@drawable/ic_general"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feed_empty_title"
        android:fontFamily="sans-serif"
        android:textColor="@color/grey_550"
        android:textSize="@dimen/font_medium"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feed_empty_msg"
        android:fontFamily="sans-serif"
        android:textColor="@color/grey_450"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_4"/>

    <com.tokopedia.design.button.Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        app:type="primary"
        app:size="medium"
        android:textAllCaps="false"
        android:text="@string/empty_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_24"/>

</LinearLayout>