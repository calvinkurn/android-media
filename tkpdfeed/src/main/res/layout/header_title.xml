<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titlePromote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_promote"
        android:textColor="@color/label_color"
        android:layout_gravity="center" />

    <android.support.v4.widget.Space
        android:layout_width="@dimen/feed_margin_s"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/info_topads"
        android:layout_width="@dimen/feed_info"
        android:layout_height="@dimen/feed_info"
        android:src="@drawable/icon_info"
        android:layout_gravity="center"
        android:tint="@color/tkpd_dark_gray" />

</LinearLayout>