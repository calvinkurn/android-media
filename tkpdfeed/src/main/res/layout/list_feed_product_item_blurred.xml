<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:adjustViewBounds="true"
            android:background="@drawable/cards_ui_thin_border"
            android:contentDescription="@string/image_product_desc"
            android:scaleType="fitCenter"
            android:padding="@dimen/image_padding_for_border"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/extra_product"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/product_image"
            app:layout_constraintRight_toRightOf="@id/product_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/black_screen_overlay"
            tools:text="+2" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_layout"
        android:paddingBottom="@dimen/product_padding_very_small"
        android:paddingLeft="@dimen/product_padding_very_small"
        android:paddingRight="@dimen/product_padding_very_small"
        android:paddingTop="@dimen/product_padding_very_small"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:textColor="@color/black_54"
        android:textStyle="normal"
        android:textSize="@dimen/sp_12"
        tools:text="Nexus 5X 32 ,awawdawdasdas pure white dan juga warna rose gold pure white dan juga warna rose gold pure white dan juga warna rose gold" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/title"
        android:fontFamily="sans-serif-medium"
        android:gravity="bottom"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_vs"
        android:paddingRight="@dimen/padding_vs"
        android:paddingTop="@dimen/padding_vs"
        android:textColor="@color/orange_red"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        android:visibility="gone"
        tools:text="Rp 3.121.500" />

</RelativeLayout>