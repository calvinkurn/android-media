<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.tkpd.tkpdfeed.feedplus.view.customview.RoundedCornerImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/feed_detail_product"
        android:layout_height="@dimen/feed_detail_product"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/feed_container_rounded_corners_border"
        tools:src="@drawable/product_no_photo_default"/>

    <ImageView
        android:id="@+id/wishlist"
        android:layout_width="@dimen/user_ava"
        android:layout_height="@dimen/user_ava"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:elevation="5dp"
        app:srcCompat="@drawable/wishlist_faved"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/product_image"
        android:layout_toLeftOf="@id/wishlist"
        android:layout_toRightOf="@+id/product_image"
        android:layout_toStartOf="@id/wishlist"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:maxLines="2"
        android:textColor="@color/black_70"
        tools:text="IKEA (R) Ringsjon - Tirai kamar "/>

    <TextView
        android:id="@id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/orange_red"
        tools:text="Rp 89.000"/>

    <RatingBar
        android:id="@+id/product_rating"
        style="@style/Small.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/product_price"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:isIndicator="true"
        android:numStars="5"
        tools:rating="3.3"
        tools:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_rating"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/product_image"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/free_return"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_prod_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_badge_free_return"
            tools:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@id/free_return"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:visibility="gone"
            tools:visibility="visible"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shop_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/product_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gold_merchant"
            android:layout_width="@dimen/small_badge_size"
            android:layout_height="@dimen/small_badge_size"
            android:layout_below="@id/label"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toRightOf="@id/product_image"
            app:srcCompat="@drawable/ic_gold"
            android:visibility="gone"

            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/official_store"
            android:layout_width="@dimen/small_badge_size"
            android:layout_height="@dimen/small_badge_size"
            android:layout_below="@id/label"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toRightOf="@id/gold_merchant"
            app:srcCompat="@drawable/ic_official"
            android:visibility="gone"
            tools:visibility="gone"/>

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/official_store"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black_54"
            android:textSize="@dimen/fontvs"
            android:textStyle="normal"
            tools:text="Barakah Clothing Dept"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_name_layout"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@id/product_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="@dimen/small_badge_size"
            android:layout_height="@dimen/small_badge_size"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            app:srcCompat="@drawable/ic_icon_location_grey"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/shop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black_38"
            android:textSize="@dimen/fontvs"
            android:textStyle="normal"
            tools:text="Tangerang"/>
    </LinearLayout>

</RelativeLayout>