<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10"
    tools:background="@color/white">

    <ImageView
        android:id="@+id/shop_avatar"
        android:layout_width="@dimen/feed_new_avatar_size"
        android:layout_height="@dimen/feed_new_avatar_size"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/feed_container_rounded_corners_border"
        android:layout_centerVertical="true"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/gold_merchant"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_width="@dimen/feed_new_badge_size"
        android:layout_height="@dimen/feed_new_badge_size"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/shop_avatar"
        android:layout_toRightOf="@+id/shop_avatar"
        app:srcCompat="@drawable/ic_gold"
        android:visibility="gone"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/official_store"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_width="@dimen/feed_new_badge_size"
        android:layout_height="@dimen/feed_new_badge_size"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/shop_avatar"
        android:layout_toRightOf="@+id/shop_avatar"
        app:srcCompat="@drawable/ic_official"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/shop_avatar"
        android:layout_toRightOf="@+id/shop_avatar">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black_38"
            android:textSize="@dimen/fontvs"
            android:textStyle="normal"
            tools:text="     Marowiajjfawlaksjdlaksjdlakjsdlaksjdlaksjdlioi ubah 1 produk " />

    </LinearLayout>


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/shop_avatar"
        android:layout_toRightOf="@+id/shop_avatar"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black_38"
        android:textSize="@dimen/fontvvs"
        tools:text="4 hours ago" />

</RelativeLayout>