<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:weightSum="1">

    <RelativeLayout
        android:id="@id/ll_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:padding="2dp">

        <com.tokopedia.tkpd.tkpdfeed.feedplus.view.customview.RoundedCornerImageView
            android:id="@id/iv_brands"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_loading_toped"
            tools:background="@color/warm_grey"/>

        <TextView
            android:id="@+id/text_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/bg_rounded_corners_red"
            android:lineSpacingExtra="2sp"
            android:padding="@dimen/dp_3"
            android:text="@string/label_new"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="7sp"/>

    </RelativeLayout>
</LinearLayout>