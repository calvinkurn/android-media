<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:textStyle="bold"
        tools:text="Seputar Tokopdeia" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/onboarding_notification_animation" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_chevron_right"
        android:padding="@dimen/padding_small"
        android:textColor="@color/green_500"
        tools:text="Seputar Tokopdeia kini giliran jakarta yang punya halaman khusus awdalwjdalkwjdlakjlsdkjalksdlakjsldkjalsdjlaksjdlakjsdlakjsldjk" />
</LinearLayout>