<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_vs"
    android:layout_marginTop="@dimen/margin_vs"
    android:background="@drawable/cards_ui_3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="0sp"
        android:padding="@dimen/padding_small"
        android:textColor="@color/black_70"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="Seputar Tokopdeia" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/video_cover"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_shop_gold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.8"
            app:srcCompat="@drawable/ic_play" />

    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="7sp"
        android:padding="@dimen/padding_small"
        android:textColor="@color/black_70"
        android:textSize="13sp"
        android:textStyle="normal"
        tools:text="Seputar Tokopdeia kini giliran jakarta yang punya halaman khusus awdalwjdalkwjdlakjlsdkjalksdlakjsldkjalsdjlaksjdlakjsdlakjsldjk" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300" />

    <include layout="@layout/feed_share_button" />
</LinearLayout>