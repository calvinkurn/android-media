<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small">

    <com.tokopedia.core.customwidget.RoundedCornerImageView
        android:id="@+id/user_ava"
        android:layout_width="@dimen/feed_user_ava"
        android:layout_height="@dimen/feed_user_ava"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/promo_image_rounded_corners"
        android:src="@drawable/ic_new_logo" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toEndOf="@id/user_ava"
        android:layout_toRightOf="@id/user_ava">

        <TextView
            android:id="@id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_text"
            android:textColor="@color/black_70"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@id/shop_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/shop_name"
            android:text="@string/title_promo"
            android:textColor="@color/black_38"
            android:textSize="@dimen/fontvs" />


    </RelativeLayout>

</RelativeLayout>