<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/official_store_link_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feed_official_store_height"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/grey_300"/>

    <ImageView
        android:id="@+id/icon_official_store"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/ic_official_store"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/icon_official_store"
        android:orientation="vertical">

        <TextView
            android:id="@+id/banner_official_store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/banner_official_store_title_text"
            android:textColor="@color/black_54"
            android:textSize="@dimen/font_small"
            android:textStyle="normal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/banner_official_store_subtitle_text"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/font_small"
            android:textStyle="normal"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_300"/>
</RelativeLayout>