<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/padding_vs"
    android:paddingLeft="@dimen/padding_vs"
    android:background="@color/white">

    <include layout="@layout/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_ava"
            android:layout_width="@dimen/feed_user_ava"
            android:layout_height="@dimen/feed_user_ava"
            android:background="@drawable/com_facebook_profile_picture_blank_portrait" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small">


            <TextView
                android:id="@id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop shop"
                android:textSize="@dimen/text_size_14"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/gold_merchant"
                android:layout_toEndOf="@+id/gold_merchant" />

            <ImageView
                android:id="@id/gold_merchant"
                android:layout_width="@dimen/feed_gold_badge"
                android:layout_height="@dimen/feed_gold_badge"
                android:background="@drawable/ic_gold"
                android:layout_marginRight="@dimen/margin_vvs"
                android:layout_alignBottom="@id/shop_name"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jual obat - obatan"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/shop_name"
                android:layout_marginTop="@dimen/feed_margin_s"
                android:textSize="@dimen/text_size_13"
                android:id="@+id/shop_desc" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>