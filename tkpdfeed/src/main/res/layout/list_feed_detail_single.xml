<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.tkpd.tkpdfeed.feedplus.view.customview.RoundedCornerImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/feed_detail_product"
        android:layout_height="@dimen/feed_detail_product"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/feed_container_rounded_corners_border"
        tools:src="@drawable/product_no_photo_default" />

    <ImageView
        android:id="@+id/wishlist"
        android:layout_width="@dimen/user_ava"
        android:layout_height="@dimen/user_ava"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:elevation="5dp"
        app:srcCompat="@drawable/wishlist_faved" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/product_image"
        android:layout_toLeftOf="@id/wishlist"
        android:layout_toRightOf="@+id/product_image"
        android:layout_toStartOf="@id/wishlist"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_vs"

            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="4sp"
            android:maxLines="2"
            android:textColor="@color/black_70"
            tools:text="IKEA (R) Ringsjon - Tirai kamar  yang pangajng" />

        <TextView
            android:id="@id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/margin_vs"
            android:textColor="@color/orange_red"
            tools:text="Rp 89.000" />

        <RatingBar
            android:id="@+id/product_rating"
            style="@style/Small.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:isIndicator="true"
            android:numStars="5"
            tools:visibility="visible"
            android:rating="4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/cashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_vs"
                android:background="@drawable/green_button_rounded"
                android:padding="@dimen/padding_vs"
                android:textColor="@color/white"
                android:textSize="@dimen/fontvvs"
                tools:text="Cashback 4%"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/wholesale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_toRightOf="@id/cashback"
                android:background="@drawable/cards_ui"
                android:padding="@dimen/padding_vs"
                android:text="@string/wholesale"
                android:textSize="@dimen/fontvvs"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/preorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_toRightOf="@+id/wholesale"
                android:background="@drawable/cards_ui"
                android:padding="@dimen/padding_vs"
                android:text="@string/preorder"
                android:textSize="@dimen/fontvvs"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/free_return"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_prod_size"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/preorder"
                app:srcCompat="@drawable/ic_badge_free_return"
                tools:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@id/buy_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/feed_detail_buy_height"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/orange_button_rounded"
            android:text="@string/action_buy"
            android:textAllCaps="false"
            android:textSize="@dimen/fontvs"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:textColor="@color/white" />


    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300" />

</RelativeLayout>