<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_vs"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@drawable/cards_ui_2">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_info" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_find_more_shop"
        android:layout_gravity="center"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_vs" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/feed_add_more"
        android:gravity="center"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_vs" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/feed_add_more_1"
        android:textSize="@dimen/text_size_12"
        android:gravity="center"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_info" />

    <TextView
        android:id="@+id/find_favorite_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_shop"
        android:background="@drawable/feed_rounded_corners"
        android:padding="@dimen/padding_small"
        android:layout_marginRight="@dimen/margin_sm"
        android:layout_marginLeft="@dimen/margin_sm"
        android:backgroundTint="@color/green_500"
        android:textColor="@color/white"
        android:gravity="center"/>
</LinearLayout>