<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:context="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="@dimen/padding_info"
    android:layout_marginRight="@dimen/padding_info"
    android:layout_marginTop="@dimen/margin_vs"
    android:layout_marginBottom="@dimen/margin_vs">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/padding_info"/>
    
    <ImageView
        android:id="@+id/iv_verified"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/padding_small"
        android:background="@color/tkpd_main_green"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/black_70"
        context:text="kol name"/>

</LinearLayout>