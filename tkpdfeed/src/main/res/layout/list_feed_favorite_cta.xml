<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_sm"
    android:background="@drawable/cards_ui_feed"
    android:orientation="vertical"
    android:padding="@dimen/padding_vs">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_info" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_find_more_shop" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_vs" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_vs" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_12" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_info" />

    <TextView
        android:id="@+id/search_shop_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        android:background="@drawable/feed_rounded_corners"
        android:backgroundTint="@color/green_500"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="@string/find_shop"
        android:textColor="@color/white" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_info" />
</LinearLayout>