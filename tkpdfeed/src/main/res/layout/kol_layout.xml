<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_shadow_feed"
    android:orientation="vertical">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_14"
        tools:text="Rekomendasi untuk Anda" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/title"
        android:background="@color/grey_300" />

    <include
        android:id="@+id/kol_header"
        layout="@layout/kol_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_below="@id/kol_header"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_loading_image"/>

    <RelativeLayout
        android:id="@+id/tooltip_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ms"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_ms"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal"
            tools:text="Kunjungi Toko" />

        <View
            android:id="@+id/separator_tooltip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/tooltip"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@color/grey_300" />

    </RelativeLayout>

    <TextView
        android:id="@+id/kol_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tooltip_area"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        android:lineSpacingExtra="5sp"
        tools:text="The snapback’s predecessor, the baseball cap, must be proud of its stylish spawn. Compared to fitted baseball caps worn by pro players, snapback are less expensive and much more attuned to contemporary urban culture. But earliest versions of the snapbac… Read More" />

    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/kol_text"
        android:background="@color/grey_300" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator3"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/like_button"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small">

            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="@dimen/feed_new_kol_button"
                android:layout_height="@dimen/feed_new_kol_button"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                app:srcCompat="@drawable/ic_thumb" />

            <TextView
                android:id="@+id/like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/like_icon"
                android:layout_toRightOf="@id/like_icon"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/action_like"
                android:textColor="@color/black_54"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment_button"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small">

            <ImageView
                android:id="@+id/comment_icon"
                android:layout_width="@dimen/feed_new_kol_button"
                android:layout_height="@dimen/feed_new_kol_button"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                app:srcCompat="@drawable/ic_comment" />

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/comment_icon"
                android:layout_toRightOf="@id/comment_icon"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/black_54"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                tools:text="935" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>