<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_large"
    android:layout_height="wrap_content"
    android:background="@drawable/cards_ui"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <com.tokopedia.core.customwidget.SquareImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/recommend_shop_image_height"
        android:layout_height="@dimen/recommend_shop_image_height"
        android:layout_marginRight="@dimen/margin_small"

        android:background="@drawable/cards_ui_2"
        tools:src="@drawable/product_no_photo_default" />

    <ImageView
        android:id="@+id/wishlist"
        android:layout_width="@dimen/icon_prod_size"
        android:layout_height="@dimen/icon_prod_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_fav" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/product_image"
        android:layout_toLeftOf="@id/wishlist"
        android:layout_toRightOf="@id/product_image"
        android:layout_toStartOf="@id/wishlist"
        android:maxLines="2"
        android:minLines="2"
        android:textSize="@dimen/fontm"
        android:textStyle="bold"
        tools:text="IKEA (R) Ringsjon - Tirai kamar mandi" />

    <TextView
        android:id="@id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:textColor="@color/orange"
        tools:text="Rp 89.000" />

    <RatingBar
        android:id="@+id/product_rating"
        style="@style/TkpdRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/drawer_icon"
        android:layout_below="@id/product_price"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:numStars="5"
        android:rating="4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/product_image">

        <TextView
            android:id="@+id/cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_vs"
            android:background="@drawable/green_button_rounded"
            android:padding="@dimen/padding_vs"
            android:textColor="@color/white"
            android:textSize="@dimen/fontvvs"
            tools:text="Cashback 4%" />

        <TextView
            android:id="@+id/wholesale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_toRightOf="@id/cashback"
            android:background="@drawable/cards_ui"
            android:padding="@dimen/padding_vs"
            android:text="@string/wholesale"
            android:textSize="@dimen/fontvvs" />

        <TextView
            android:id="@+id/preorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_toRightOf="@id/wholesale"
            android:background="@drawable/cards_ui"
            android:padding="@dimen/padding_vs"
            android:text="@string/preorder"
            android:textSize="@dimen/fontvvs" />

        <ImageView
            android:id="@+id/free_return"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_prod_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/preorder"
            android:src="@drawable/ic_badge_free_return" />

    </RelativeLayout>
</RelativeLayout>