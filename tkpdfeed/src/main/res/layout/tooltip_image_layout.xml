<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_toped_step_02"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red_500"
        android:paddingLeft="@dimen/padding_small_sm"
        android:paddingTop="@dimen/padding_small_sm"
        >

        <TextView
            android:id="@+id/tooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/black_tooltip"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="6sp"
            android:padding="@dimen/padding_vs"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xxsmall"
            android:textStyle="normal"
            tools:text="Rp 249000 - Lihat Produk"/>
    </RelativeLayout>

</RelativeLayout>