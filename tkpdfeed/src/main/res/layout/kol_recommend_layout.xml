<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/margin_sm"
              android:background="@color/white"
              android:orientation="vertical">


    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        />

    <TextView
        android:id="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-medium"
        android:gravity="center|left"
        android:padding="@dimen/padding_small"
        android:text="@string/title_toppicks"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_14"
        tools:text="Explore Posting dari Celebgram favoritmu"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_small"/>

    <TextView
        android:id="@+id/see_all_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_official_store_height"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/margin_small"
        android:clickable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/explore_more"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/unify_font_normal"
        android:textStyle="normal"/>

    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        />
</LinearLayout>