<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              tools:layout_height="match_parent">


    <com.tokopedia.tkpd.tkpdfeed.feedplus.view.customview.RoundedCornerImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vs"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:contentDescription="@string/image_product_desc"
        android:gravity="center"
        android:scaleType="fitCenter"
        tools:src="@color/colorAccent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vs"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:textColor="@color/black_70"
        android:textSize="@dimen/unify_font_normal"
        android:textStyle="normal"
        tools:text="Nexus 5X 32 ,awawdawdasdas  pure white dan juga warna rose gold"/>

    <TextView
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vvs"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black_38"
        android:textSize="@dimen/unify_font_small"
        android:textStyle="normal"
        tools:text="Rp 2.700.000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vvs"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_small"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/orange_red"
            android:textSize="@dimen/unify_font_normal"
            android:textStyle="normal"
            tools:text="Rp 3.121.500"/>

        <TextView
            android:id="@+id/text_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_rounded_corners_red"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="normal"
            tools:text="10% Off"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_vs"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_vs"
            android:background="@drawable/green_button_rounded"
            android:padding="@dimen/padding_vs"
            android:textColor="@color/white"
            android:textSize="@dimen/fontvvs"
            tools:text="Cashback 4%"
            tools:visibility="gone"/>

        <TextView
            android:id="@+id/wholesale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_vs"
            android:background="@drawable/cards_ui"
            android:padding="@dimen/padding_vs"
            android:text="@string/wholesale"
            android:textSize="@dimen/fontvvs"
            tools:visibility="gone"/>

        <TextView
            android:id="@+id/preorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_vs"
            android:background="@drawable/cards_ui"
            android:padding="@dimen/padding_vs"
            android:text="@string/preorder"
            android:textSize="@dimen/fontvvs"
            tools:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted_top_border"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        >

        <com.tokopedia.tkpd.tkpdfeed.feedplus.view.customview.RoundedCornerImageView
            android:id="@id/shop_ava"
            android:layout_width="@dimen/feed_shop_ava"
            android:layout_height="@dimen/feed_shop_ava"
            android:background="@drawable/feed_container_rounded_corners_border"/>

        <android.support.v4.widget.Space
            android:layout_width="@dimen/margin_vs"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:textColor="@color/black_70"
            android:textSize="@dimen/unify_font_small"
            android:textStyle="normal"
            tools:text="Belli to Baby"/>
    </LinearLayout>


</LinearLayout>