<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.tokopedia.tkpd.tkpdfeed.feedplus.view.customview.RoundedCornerImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:contentDescription="@string/image_product_desc"
            android:gravity="center"
            android:scaleType="fitCenter"
            tools:src="@color/colorAccent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_image"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_marginTop="@dimen/margin_vs"
            android:layout_marginBottom="@dimen/unified_margin_vvs"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/black_70"
            android:textSize="@dimen/unify_font_normal"
            android:textStyle="normal"
            tools:text="Nexus 5X 32 ,awawdawdasde white dan juga warna rose gold"/>

        <TextView
            android:id="@+id/text_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_vs"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_38"
            android:textSize="@dimen/unify_font_small"
            android:textStyle="normal"
            android:layout_marginBottom="@dimen/unified_margin_vvs"
            tools:text="Rp 2.700.000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_vs"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_small"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/orange_red"
                android:textSize="@dimen/unify_font_normal"
                android:textStyle="normal"
                tools:text="Rp 3.121.500"/>

            <TextView
                android:id="@+id/text_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_rounded_corners_red"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="normal"
                tools:text="10% Off"
                />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_marginRight="@dimen/margin_vs"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted_top_border"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small">

        <com.tokopedia.tkpd.tkpdfeed.feedplus.view.customview.RoundedCornerImageView
            android:id="@id/shop_ava"
            android:layout_width="@dimen/feed_shop_ava"
            android:layout_height="@dimen/feed_shop_ava"
            android:background="@drawable/feed_container_rounded_corners_border"/>

        <android.support.v4.widget.Space
            android:layout_width="@dimen/margin_vs"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@id/shop_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black_70"
            android:textSize="@dimen/unify_font_small"
            android:textStyle="normal"
            tools:text="Belli to Baby"/>

        <ImageView
            android:id="@+id/free_return"
            android:layout_width="@dimen/badge_size"
            android:layout_height="@dimen/badge_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_vs"
            android:gravity="center_vertical"
            android:src="@drawable/ic_badge_free_return"
            android:visibility="visible"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"/>

</LinearLayout>