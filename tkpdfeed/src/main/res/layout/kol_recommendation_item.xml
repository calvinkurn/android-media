<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_small"
    android:background="@drawable/cards_ui_2"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_small"
    >

    <com.tokopedia.tkpd.tkpdfeed.feedplus.view.customview.RoundedCornerImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/kol_avatar"
        android:layout_height="@dimen/kol_avatar"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_small"
        tools:src="@drawable/ic_top_ads"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/kol_badge"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="@dimen/margin_vs"
            android:src="@drawable/ic_badge_official"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/kol_badge"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="7sp"
            android:textColor="@color/black_70"
            android:textSize="@dimen/text_size_s_medium"
            android:textStyle="normal"
            tools:text="Young Lex"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_small"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/black_38"
        android:textSize="@dimen/text_size_xsmall"
        android:textStyle="normal"
        tools:text="Artist"
        />

    <TextView
        android:id="@+id/follow_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/green_button_rounded_unify"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/action_follow_english"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xsmall"
        android:textStyle="normal"/>
</LinearLayout>