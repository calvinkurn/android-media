<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/shop_avatar"
        android:layout_width="@dimen/feed_user_ava"
        android:layout_height="@dimen/feed_user_ava"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/feed_container_rounded_corners_border"
        tools:src="@drawable/ic_check_green_24dp" />

    <ImageView
        android:id="@+id/gold_merchant"
        android:layout_width="@dimen/ic_badge_size"
        android:layout_height="@dimen/ic_badge_size"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/shop_avatar"
        android:layout_toRightOf="@+id/shop_avatar"
        android:src="@drawable/ic_gold"
        android:visibility="gone"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/official_store"
        android:layout_width="@dimen/ic_badge_size"
        android:layout_height="@dimen/ic_badge_size"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/shop_avatar"
        android:layout_toRightOf="@+id/shop_avatar"
        android:src="@drawable/ic_official"
        android:visibility="gone"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/shop_avatar"
        android:layout_toRightOf="@id/shop_avatar"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:maxLines="2"
        android:textColor="@color/black_70"
        android:textStyle="normal"
        tools:text="      Marowiajjfawioi ubah 1 produk " />

    <TextView
        android:id="@+id/shop_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_name"
        android:layout_toRightOf="@id/shop_avatar"
        android:textColor="@color/black_38"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textSize="@dimen/fontvs"
        tools:text="Milik tanah air bangsa" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/shop_avatar"
        android:background="@color/grey_300" />
</RelativeLayout>