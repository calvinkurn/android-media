<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cards_ui"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/shop_avatar"
        android:layout_width="@dimen/feed_user_ava"
        android:layout_height="@dimen/feed_user_ava"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@drawable/feed_container_rounded_corners_border"
        tools:src="@drawable/ic_check_green_24dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/shop_avatar"
        android:layout_toEndOf="@+id/shop_avatar"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/black_70"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="4sp"
            tools:text="Marowiajjfawioi ubah 1 produk " />

    </LinearLayout>

    <TextView
        android:id="@+id/shop_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:textColor="@color/grey_500"
        android:layout_toRightOf="@id/shop_avatar"
        android:textSize="@dimen/fontvs"
        tools:text="Milik tanah air bangsa" />
</RelativeLayout>