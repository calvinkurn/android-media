<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"/>

    <com.tokopedia.tkpd.tkpdfeed.feedplus.view.customview.RoundedCornerImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_margin="@dimen/margin_vs"
        tools:src="@drawable/ic_top_ads"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        tools:text="TOPI SNAPBACK AIR JORDAN 01"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/price_pdp"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        tools:text="Rp 250.000"
        />

    <ImageView
        android:id="@+id/wishlist"
        android:layout_width="@dimen/small_wishlist_kol"
        android:layout_height="@dimen/small_wishlist_kol"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_small"
        android:src="@drawable/ic_wishlist"/>
</RelativeLayout>