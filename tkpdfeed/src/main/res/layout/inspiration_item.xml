<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list">

    <include layout="@layout/list_feed_product_item"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/fav_area"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/padding_vvs"
        android:layout_marginEnd="@dimen/padding_vvs"
        android:layout_marginTop="@dimen/padding_vvs"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>

