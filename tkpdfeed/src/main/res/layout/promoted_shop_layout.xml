<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@drawable/cards_ui_2">


    <include layout="@layout/promoted_header"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_small" />

    <include layout="@layout/promoted_shop_body"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_ms" />

    <LinearLayout
        android:id="@id/fav_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include android:id="@id/favorite" layout="@layout/favorite_button"/>
        <include android:id="@id/favorited" layout="@layout/favorited_button"/>
    </LinearLayout>
</LinearLayout>