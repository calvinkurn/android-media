<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_small"
    android:paddingBottom="@dimen/padding_small"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@drawable/cards_ui_2">


    <include layout="@layout/promoted_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_small" />

    <include layout="@layout/promoted_shop_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_ms" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_ms" />


    <LinearLayout
        android:id="@id/fav_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_small"
        android:orientation="vertical">
        <include android:id="@id/favorite" layout="@layout/favorite_button"/>
        <include android:id="@id/favorited" layout="@layout/favorited_button"/>
    </LinearLayout>
</LinearLayout>