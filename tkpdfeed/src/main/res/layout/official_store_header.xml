<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <TextView
        android:id="@+id/official_store_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_official_store_height"
        android:background="@drawable/cards_feed_plus"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2sp"
        android:padding="@dimen/padding_small"
        android:textColor="@color/black_70"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="@string/official_store_header"
        />


    <ImageView
        android:id="@+id/official_store_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/official_store_header_image_height"
        tools:background="@color/light_blue_300"/>

</LinearLayout>