<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_15">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dp_10"
            android:text="@string/sub_history_product"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/dp_10"
            android:text="@string/title_see_all"
            android:textColor="@color/href_link"
            android:textSize="@dimen/fontvs" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/history_product_recycler_view"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:layout_height="@dimen/history_height"
        android:scrollbars="horizontal" />

</LinearLayout>