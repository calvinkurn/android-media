<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:padding="@dimen/padding_small" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_all"
        android:textColor="@color/green_500"
        android:textSize="@dimen/text_size_medium"/>
    <android.support.v4.widget.Space
        android:layout_width="@dimen/margin_small"
        android:layout_height="wrap_content" />
    <com.tokopedia.core.customwidget.SquareImageView
        android:layout_width="@dimen/text_size_medium"
        android:layout_height="@dimen/text_size_medium"
        android:src="@drawable/chevron_thin_right"
        android:tint="@color/green_500"/>
</LinearLayout>