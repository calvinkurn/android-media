<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/space_med"
    android:paddingLeft="@dimen/space_med">

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/container"
        android:layout_toRightOf="@id/container"
        android:fontFamily="sans-serif-medium"
        android:text="@string/dot"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/font_label"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/space_med"
        android:paddingTop="@dimen/space_med"
        tools:text="Text" />

    <View
        android:id="@+id/highlight"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_tiny"
        android:background="@color/tkpd_main_green"
        android:visibility="invisible"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:layout_alignRight="@id/title"
        tools:visibility="visible"
        android:layout_alignStart="@id/title"
        android:layout_alignEnd="@id/title" />


</RelativeLayout>