<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:elevation="3dp"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vote_header"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_vote"
                android:layout_width="@dimen/size_icon_vote"
                android:layout_height="@dimen/size_icon_vote"
                app:srcCompat="@drawable/ic_vote"/>

            <Space
                android:layout_width="@dimen/space_mini"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/vote_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/vote_has_ended"
                android:textAllCaps="true"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/font_micro"

                android:textStyle="normal" android:paddingTop="@dimen/space_med"
                android:paddingBottom="@dimen/space_med"/>

            <Space
                android:layout_width="@dimen/space_small"
                android:layout_height="wrap_content"/>

            <com.tokopedia.tkpdstream.channel.view.ProgressBarWithTimer
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/layout_voted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                tools:visibility="visible"
                android:paddingTop="@dimen/space_average"
                android:paddingBottom="@dimen/space_average"
                android:visibility="gone">

                <View
                    android:layout_width="@dimen/space_micro"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_avg_small"
                    android:layout_marginRight="@dimen/space_avg_small"
                    android:background="@color/grey_hint"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_choose" />
                <Space
                    android:layout_width="@dimen/space_mini"
                    android:layout_height="match_parent"
                    android:background="@color/red_50"
                    android:paddingLeft="@dimen/space_avg_small"
                    android:paddingRight="@dimen/space_avg_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sudah\nMemilih"
                    android:textSize="@dimen/font_micro"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_med"
            app:srcCompat="@drawable/ic_chevron"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_atomic"
        android:background="@color/grey_hint"/>

    <LinearLayout
        android:id="@+id/vote_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_med"
        android:paddingLeft="@dimen/space_sm"
        android:paddingRight="@dimen/space_sm"
        android:paddingTop="@dimen/space_med"
        android:visibility="gone"
        tools:visibility="gone"
        >

        <TextView
            android:id="@+id/vote_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5sp"
            android:paddingLeft="@dimen/space_med"
            android:paddingRight="@dimen/space_med"
            android:text="Menurut Toppers, siapa ya yang akan jadi pemain MVP di Piala Dunia Tahun Ini?"
            android:textColor="@color/black_70"
            android:textSize="@dimen/font_title"
            android:textStyle="normal"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_average"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/vote_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none"
                tools:itemCount="2"
                tools:listitem="@layout/vote_option_image"/>
        </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_med"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_voting_gift"/>

            <TextView
                android:id="@+id/vote_info_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/badge"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="@dimen/padding_small"
                android:text="Info Hadiah"
                android:textColor="@color/medium_green"
                android:textSize="12sp"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/vote_participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:text="1.725.000 Pemilih"
                android:textColor="@color/black_38"
                android:textSize="@dimen/font_label"
                android:textStyle="normal"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>