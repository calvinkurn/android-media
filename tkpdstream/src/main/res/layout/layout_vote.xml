<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="3dp">

    <RelativeLayout
        android:id="@+id/vote_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_med"
        android:paddingBottom="@dimen/space_med">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon_vote"
                android:layout_width="@dimen/size_icon_vote"
                android:layout_height="@dimen/size_icon_vote"
                android:background="@drawable/ic_vote"/>

            <Space
                android:layout_width="@dimen/space_mini"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/vote_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:text="@string/vote_has_ended"
                android:textAllCaps="true"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/font_micro"
                android:gravity="center"
                android:textStyle="normal" />

            <Space
                android:layout_width="@dimen/space_small"
                android:layout_height="wrap_content" />

            <com.tokopedia.tkpdstream.channel.view.ProgressBarWithTimer
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/layout_voted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/space_micro"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_avg_small"
                    android:layout_marginRight="@dimen/space_avg_small"
                    android:background="@color/grey_hint" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_choose"/>
                <Space
                    android:layout_width="@dimen/space_mini"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/space_avg_small"
                    android:paddingRight="@dimen/space_avg_small"
                    android:background="@color/red_50"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_micro"
                    android:text="Sudah\nMemilih"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron"
            android:layout_marginRight="@dimen/space_med" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_atomic"
        android:background="@color/grey_hint"/>

    <LinearLayout
        android:id="@+id/vote_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone"
        android:paddingRight="@dimen/space_sm"
        android:paddingLeft="@dimen/space_sm"
        android:paddingTop="@dimen/space_med"
        android:paddingBottom="@dimen/space_med"
        >
        <TextView
            android:id="@+id/vote_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_title"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/black_70"
            android:lineSpacingExtra="5sp"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/space_med"
            android:paddingLeft="@dimen/space_med"
            android:text="Menurut Toppers, siapa ya yang akan jadi pemain MVP di Piala Dunia Tahun Ini?"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_average"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardUseCompatPadding="false"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/vote_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/vote_option_image"
                tools:itemCount="2"
                android:overScrollMode="never"
                android:scrollbars="none"/>
        </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_med"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_voting_gift"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/vote_info_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/medium_green"
                android:layout_toRightOf="@+id/badge"
                android:paddingLeft="@dimen/padding_small"
                android:text="Info Hadiah"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/black_38"
                android:gravity="end"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/font_label"
                android:text="1.725.000 Pemilih"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>