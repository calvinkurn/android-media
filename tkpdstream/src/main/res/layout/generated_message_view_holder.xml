<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/new_margin_med"
                android:layout_marginStart="@dimen/new_margin_med"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:id="@+id/header_time"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:fontFamily="sans-serif"
                      android:gravity="center"
                      android:paddingBottom="@dimen/space_between"
                      android:textAllCaps="true"
                      android:textColor="@color/font_black_disabled_38"
                      android:textSize="@dimen/font_micro"
                      android:textStyle="normal"
                      app:layout_constraintHorizontal_bias="0.5"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      tools:text="HARI INI"/>

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/groupchat_avatar_size"
                android:layout_height="@dimen/groupchat_avatar_size"
                android:layout_below="@id/header_time"
                android:layout_marginTop="@dimen/space_mini"
                tools:src="@color/background_notification"/>

            <include
                android:id="@+id/chat_header"
                layout="@layout/chat_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_time"
                android:layout_marginLeft="@dimen/space_small"
                android:layout_marginStart="@dimen/space_small"
                android:layout_toEndOf="@id/avatar"
                android:layout_toRightOf="@id/avatar"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat_header"
                android:layout_marginLeft="@dimen/space_small"
                android:layout_marginStart="@dimen/space_small"
                android:layout_toEndOf="@id/avatar"
                android:layout_toRightOf="@id/avatar"
                android:fontFamily="sans-serif"
                android:textColor="@color/font_black_primary_70"
                android:textColorLink="@color/font_black_primary_70"
                android:textSize="@dimen/font_small"
                android:textStyle="normal"
                android:visibility="visible"
                tools:text="Wuuu baik om! Go Brazil go!"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>