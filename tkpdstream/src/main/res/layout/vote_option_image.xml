<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/cardview_light_background"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="0dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.design.image.SquareImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:layout_width="140dp"
            tools:src="@drawable/ic_calendar_grey"/>

        <RelativeLayout
            android:id="@+id/shadow_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@color/black"
            android:adjustViewBounds="true"
            android:visibility="gone"
            tools:visibility="visible"/>

        <LinearLayout
            android:id="@+id/percent_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout_progress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="-2sp"
                android:paddingLeft="@dimen/space_small"
                android:textColor="@color/white"
                android:textSize="@dimen/font_headline"
                android:textStyle="bold"
                tools:text="90"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="0sp"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="@dimen/font_title"
                android:textStyle="normal"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView"
            android:layout_alignRight="@id/imageView">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/text_view"
                android:indeterminate="false"
                android:progress="10"
                android:progressDrawable="@drawable/vote_option_image_default"/>

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text_view"
                android:padding="@dimen/space_tiny"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_checked_inverse"/>

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="0sp"
                android:maxLength="18"
                android:paddingBottom="@dimen/space_small"
                android:paddingLeft="@dimen/space_small"
                android:paddingRight="@dimen/space_tiny"
                android:paddingTop="@dimen/space_small"
                android:textColor="@color/white"
                android:textSize="@dimen/font_micro"
                android:textStyle="normal"
                tools:text="Donald Duck"/>


        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>