<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginStart="@dimen/new_margin_med"
        android:layout_marginTop="@dimen/margin_med"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/background_notification"/>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginStart="@dimen/new_margin_small"
        android:layout_marginTop="@dimen/new_margin_med"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Atalarikzyah"/>


    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/nickname"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pengguna"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/dot"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/dot_size"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/label"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/new_margin_med"
        android:layout_toEndOf="@id/nickname"
        android:layout_toRightOf="@id/nickname"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12.00"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname"
        android:layout_marginBottom="@dimen/new_margin_small"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:textColorLink="@color/font_black_primary_70"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_primary_70"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        tools:text="Wuuu baik om! Go Brazil go!"
        android:layout_marginLeft="8dp"/>

</android.support.constraint.ConstraintLayout>