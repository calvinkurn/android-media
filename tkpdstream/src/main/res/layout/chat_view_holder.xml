<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        tools:src="@color/background_notification"/>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        tools:text="Atalarikzyah"
        />

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nickname"
        android:layout_toRightOf="@id/nickname"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_white_disabled_38"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        tools:text="12.00"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_primary_70"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        tools:text="Wuuu baik om! Go Brazil go!"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_primary_70"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        tools:text="DOR DOR DOR"
        />
</RelativeLayout>