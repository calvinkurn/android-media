<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_med">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:gravity="center"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_med" />

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="4sp"
            android:maxLines="2"
            android:textColor="@color/black_70"
            android:textSize="@dimen/font_title"
            android:textStyle="normal"
            tools:text="2018 FIFA World Cup" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_mini" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:maxLines="4"
            android:textColor="@color/black_55"
            android:textSize="@dimen/font_small"
            android:textStyle="normal"
            tools:text="Hai para pecinta sepak bola, Ramaikan piala dunia 2018 bersama Tokopedia! Ikuti quiznya dan menangkan Tokocash senilai jutaan rupiah. Buruan, jangan sampai kelewatan!" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_med" />

        <RelativeLayout
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prof_pict"
                android:layout_width="@dimen/groupchat_avatar_size_large"
                android:layout_height="@dimen/groupchat_avatar_size_large"
                android:layout_marginRight="@dimen/space_small"
                tools:src="@drawable/ic_badge_diamond" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/prof_pict"
                android:layout_toRightOf="@+id/prof_pict"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_70"
                android:textSize="@dimen/font_micro"
                android:textStyle="normal"
                tools:text="Darius Sinathrya" />

            <ImageView
                android:id="@+id/logo_participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/participant"
                android:layout_toStartOf="@+id/participant"
                app:srcCompat="@drawable/ic_eyes_view" />


            <TextView
                android:id="@+id/participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_38"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/space_mini"
                tools:text="2.546.000" />

        </RelativeLayout>

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_med" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="@dimen/radius"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/medium_green"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="@dimen/space_med"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            android:text="@string/enter_event_group_chat" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>