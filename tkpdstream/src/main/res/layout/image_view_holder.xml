<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/header_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="HARI INI" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/groupchat_avatar_size"
        android:layout_height="@dimen/groupchat_avatar_size"
        android:layout_below="@id/header_time"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_5"
        tools:src="@color/background_notification" />

    <include
        android:id="@+id/chat_header"
        layout="@layout/chat_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/content_image_wrapper"
        android:layout_alignStart="@+id/content_image_wrapper"
        android:layout_below="@+id/header_time"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:id="@+id/content_image_wrapper"
        android:layout_width="@dimen/max_size_bubble"
        android:layout_height="@dimen/max_size_bubble"
        android:layout_below="@id/chat_header"
        android:layout_toRightOf="@id/avatar"
        android:layout_toEndOf="@id/avatar"
        android:layout_marginTop="@dimen/space_mini"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginStart="@dimen/space_small"
        android:layout_marginBottom="@dimen/space_small"
        >

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_loading_image"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>