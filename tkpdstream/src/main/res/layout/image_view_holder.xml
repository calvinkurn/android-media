<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:layout_editor_absoluteY="81dp">

    <include
        android:id="@+id/header_time"
        layout="@layout/layout_header_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginEnd="@dimen/new_margin_small"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_small"
        android:layout_marginStart="@dimen/new_margin_med"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_time"
        tools:src="@color/background_notification"/>

    <ImageView
        android:id="@+id/influencer_badge"
        android:layout_width="@dimen/badge_size"
        android:layout_height="@dimen/badge_size"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_small"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@id/header_time"
        tools:src="@drawable/ic_influencer"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif"

        android:padding="@dimen/padding_vvvs"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/influencer_badge"
        app:layout_constraintTop_toBottomOf="@id/header_time"
        tools:text="Atalarikzyah"/>


    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/bg_rounded_green_label"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="3sp"
        android:padding="@dimen/padding_vvs"
        android:paddingLeft="@dimen/padding_vs"
        android:paddingRight="@dimen/padding_vs"
        android:text="@string/label_admin"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/font_label"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/nickname"
        app:layout_constraintTop_toBottomOf="@id/header_time"/>

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vvs"
        android:layout_marginRight="@dimen/margin_vvs"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/dot"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/dot_size"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintStart_toEndOf="@+id/label"
        app:layout_constraintTop_toBottomOf="@id/header_time"/>

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toEndOf="@id/nickname"
        android:layout_toRightOf="@id/nickname"
        android:fontFamily="sans-serif"
        android:padding="@dimen/padding_vvvs"

        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toBottomOf="@id/header_time"
        tools:text="12.00"/>

    <ImageView
        android:id="@+id/content_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nickname"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginEnd="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_med"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/nickname"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        tools:src="@drawable/ic_loading_image"/>

</android.support.constraint.ConstraintLayout>