<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/channel_info_background">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_med"
            android:paddingLeft="@dimen/space_med"
            android:paddingRight="@dimen/space_med"
            android:paddingTop="@dimen/space_sm">

            <TextView
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="4sp"
                android:maxLines="2"
                android:textColor="@color/black_70"
                android:textSize="@dimen/font_title"
                android:textStyle="normal"
                tools:text="2018 FIFA World Cup" />

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_mini" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:maxLines="4"
                android:textColor="@color/black_55"
                android:textSize="@dimen/font_small"
                android:textStyle="normal"
                tools:text="Hai para pecinta sepak bola, Ramaikan piala dunia 2018 bersama Tokopedia! Ikuti quiznya dan menangkan Tokocash senilai jutaan rupiah. Buruan, jangan sampai kelewatan!" />

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_med" />

            <RelativeLayout
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/prof_pict"
                    android:layout_width="@dimen/groupchat_avatar_size_large"
                    android:layout_height="@dimen/groupchat_avatar_size_large"
                    android:layout_marginRight="@dimen/space_small"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/prof_pict"
                    android:layout_toRightOf="@+id/prof_pict"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/font_micro"
                    android:textStyle="normal"
                    tools:text="Darius Sinathrya" />

                <ImageView
                    android:id="@+id/logo_participant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/participant"
                    android:layout_toStartOf="@+id/participant"
                    app:srcCompat="@drawable/ic_eyes_view" />


                <TextView
                    android:id="@+id/participant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_mini"
                    android:layout_marginStart="@dimen/space_mini"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/font_micro"
                    android:textStyle="normal"
                    tools:text="2.546.000" />

            </RelativeLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/channel_partners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2"
            tools:listitem="@layout/item_channel_partner" />

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>