<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/channel_info_background">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_med"
        android:paddingRight="@dimen/space_med"
        android:paddingBottom="@dimen/space_med"
        android:paddingTop="@dimen/space_sm">

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="4sp"
            android:maxLines="2"
            android:textColor="@color/black_70"
            android:textSize="@dimen/font_title"
            android:textStyle="normal"
            tools:text="2018 FIFA World Cup" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_mini" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:maxLines="4"
            android:textColor="@color/black_55"
            android:textSize="@dimen/font_small"
            android:textStyle="normal"
            tools:text="Hai para pecinta sepak bola, Ramaikan piala dunia 2018 bersama Tokopedia! Ikuti quiznya dan menangkan Tokocash senilai jutaan rupiah. Buruan, jangan sampai kelewatan!" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_med" />

        <RelativeLayout
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prof_pict"
                android:layout_width="@dimen/groupchat_avatar_size_large"
                android:layout_height="@dimen/groupchat_avatar_size_large"
                android:layout_marginRight="@dimen/space_small"
                tools:src="@drawable/ic_badge_diamond" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/prof_pict"
                android:layout_toRightOf="@+id/prof_pict"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_70"
                android:textSize="@dimen/font_micro"
                android:textStyle="normal"
                tools:text="Darius Sinathrya" />

            <ImageView
                android:id="@+id/logo_participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/participant"
                android:layout_toStartOf="@+id/participant"
                app:srcCompat="@drawable/ic_eyes_view" />


            <TextView
                android:id="@+id/participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_mini"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_38"
                android:textSize="@dimen/font_micro"
                android:textStyle="normal"
                tools:text="2.546.000" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/partner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_med"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/space_med"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="4sp"
            android:text="@string/official_partner"
            android:textColor="@color/black_70"
            android:textSize="@dimen/font_title"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_med"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/partner_avatar_size"
                android:layout_height="@dimen/partner_avatar_size"
                app:cardCornerRadius="@dimen/radius"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/partner_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/bg_button_green_enabled" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/partner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_med"
                android:layout_marginStart="@dimen/space_med"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:textColor="@color/black_70"
                android:textSize="@dimen/font_title"
                android:textStyle="normal"
                tools:text="Metro TV Metro TV Metro TV Metro TV Metro TV" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>