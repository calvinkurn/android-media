<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/root_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/channel_banner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="@color/medium_green"
            app:layout_constraintBottom_toBottomOf="@+id/sponsor_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1"/>

        <RelativeLayout
            android:id="@+id/shadow_layer"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:alpha="0.1"
            android:background="@color/black"
            android:adjustViewBounds="true"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/channel_banner"
            app:layout_constraintTop_toTopOf="@id/channel_banner"
            tools:visibility="visible"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:subtitleTextAppearance="@style/ToolbarSubtitleGroupChat"
            app:titleTextAppearance="@style/ToolbarGroupChat"
            tools:layout_height="?attr/actionBarSize"
            tools:subtitle="subtitle"
            tools:title="title"/>

        <LinearLayout
            android:id="@+id/sponsor_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_ms"
                android:layout_marginLeft="@dimen/new_margin_med"
                android:layout_marginRight="@dimen/new_margin_med"
                android:layout_marginTop="@dimen/new_margin_small"
                android:background="@color/white"
                android:foreground="@drawable/bg_sponsor_border"
                app:cardCornerRadius="@dimen/card_channel_elevation"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/space_atomic"
                >

                <ImageView
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/sponsor_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars"/>
            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space

                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_ms"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/channel_banner"
            app:cardElevation="@dimen/space_tiny">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/space_small"
                android:paddingLeft="@dimen/space_small"
                android:orientation="horizontal"/>

        </android.support.v7.widget.CardView>

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     xmlns:tools="http://schemas.android.com/tools"
                     android:id="@+id/container"
                     android:layout_width="0dp"
                     android:layout_height="0dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintHorizontal_weight="1"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toBottomOf="@id/tab_container"
                     app:layout_constraintVertical_weight="1"
                     tools:ignore="MergeRootFrame"/>

        <!--<com.tokopedia.design.tab.Tabs-->
        <!--android:id="@+id/tab"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@id/channel_banner"-->
        <!--app:tabTextAppearance="@style/Tabs.Main"-->
        <!--app:tabType="main"/>-->

        <!--<com.tokopedia.abstraction.base.view.widget.TouchViewPager-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/pager"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_below="@+id/tab"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintHorizontal_weight="1"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@id/tab"-->
        <!--app:layout_constraintVertical_weight="1"/>-->

    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"/>

</RelativeLayout>