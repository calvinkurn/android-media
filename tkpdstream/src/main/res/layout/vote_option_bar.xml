<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/space_small">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:layout_alignBottom="@+id/text_view"
        android:layout_alignTop="@+id/text_view"
        android:progress="80"
        android:progressDrawable="@drawable/vote_option_bar_selected"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="273dp" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.07"
        android:paddingLeft="@dimen/space_med"
        android:paddingRight="@dimen/space_small"
        android:paddingTop="@dimen/space_average"
        android:paddingBottom="@dimen/space_average"
        android:textColor="@color/font_black_secondary_54"
        android:textSize="@dimen/font_small"
        android:textStyle="bold"
        tools:text="Donald Duck" />

    <TextView
        android:id="@+id/percent"
        android:paddingRight="@dimen/space_small"
        android:paddingLeft="@dimen/space_small"
        android:paddingTop="@dimen/space_average"
        android:paddingBottom="@dimen/space_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/font_black_secondary_54"
        android:letterSpacing="0.07"
        android:layout_alignParentRight="true"
        tools:text="90%"
         />
</RelativeLayout>