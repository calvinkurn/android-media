<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_med"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/partner_avatar_size"
        android:layout_height="@dimen/partner_avatar_size"
        app:cardCornerRadius="@dimen/radius"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/partner_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/partner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_med"
        android:layout_marginStart="@dimen/space_med"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:textColor="@color/black_70"
        android:textSize="@dimen/font_title"
        android:textStyle="normal"
        tools:text="Metro TV Metro TV Metro TV Metro TV Metro TV" />
</LinearLayout>