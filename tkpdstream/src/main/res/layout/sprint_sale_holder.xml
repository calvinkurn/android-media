<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/header_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="@dimen/margin_small"
              android:fontFamily="sans-serif"
              android:gravity="center"
              android:textAllCaps="true"
              android:textColor="@color/font_black_disabled_38"
              android:textSize="@dimen/font_micro"
              android:textStyle="normal"
              app:layout_constraintHorizontal_bias="0.5"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:text="HARI INI"/>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/groupchat_avatar_size"
        android:layout_height="@dimen/groupchat_avatar_size"
        android:layout_below="@id/header_time"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginStart="@dimen/new_margin_med"
        android:layout_marginTop="@dimen/margin_vs"
        tools:src="@color/background_notification"/>

    <include
        android:id="@+id/chat_header"
        layout="@layout/chat_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_time"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginStart="@dimen/space_small"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/chat_header"
        android:layout_toEndOf="@id/avatar"
        android:layout_toRightOf="@id/avatar"
        android:layout_marginEnd="@dimen/new_margin_med"
        android:layout_marginLeft="@dimen/space_small"
        android:layout_marginRight="@dimen/new_margin_med"
        android:layout_marginStart="@dimen/space_small"
        android:layout_marginTop="@dimen/space_mini"
        android:weightSum="7">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/sprintsale_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/chat_vote_background"
            android:minWidth="@dimen/max_size_bubble"
            android:paddingBottom="@dimen/space_med"
            android:paddingLeft="@dimen/space_average"
            android:paddingRight="@dimen/space_average"
            android:paddingTop="@dimen/space_med"
            >

            <ImageView
                android:id="@+id/sprintsale_icon"
                android:layout_width="10dp"
                android:layout_height="@dimen/vote_icon_size"
                android:layout_marginTop="@dimen/margin_vvvs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_vote"
                tools:layout_editor_absoluteX="12dp"/>

            <TextView
                android:id="@+id/sprintsale_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_mini"
                android:layout_marginStart="@dimen/space_mini"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black_54"
                android:textSize="@dimen/font_micro"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/sprintsale_icon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="VOTE TELAH BERAKHIR"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ms"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sprintsale_title"/>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</RelativeLayout>