<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/product_image_layout"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <com.tokopedia.design.image.SquareImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_image_layout"
            tools:src="@color/green_200"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/discount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_vvs"
        android:layout_marginTop="@dimen/margin_vs"
        android:background="@drawable/bg_rounded_red_label"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/padding_vvs"
        android:paddingLeft="@dimen/padding_ms"
        android:paddingRight="@dimen/padding_ms"
        android:paddingTop="@dimen/padding_vvs"
        android:textColor="@color/red_500"
        android:textSize="@dimen/textsize_tiny"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="50% OFF"
        />

    <TextView
        android:id="@+id/price_before_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_ms"
        android:fontFamily="sans-serif"
        android:textColor="@color/black_38"
        android:textSize="@dimen/font_tiny"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_image_layout"
        tools:text="Rp4.655.000"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/tkpd_main_orange"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_before_discount"
        tools:layout_editor_absoluteX="4dp"
        tools:text="Rp2.150.000"/>

    <ProgressBar
        android:id="@+id/stock_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/margin_ms"
        android:indeterminate="false"
        tools:progress="100"
        android:progressDrawable="@drawable/progress_bar_stock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price"
        />

    <TextView
        android:id="@+id/stock_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vvs"
        android:fontFamily="sans-serif"
        android:textColor="@color/black_54"
        android:textSize="@dimen/font_tiny"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_progress"
        tools:text="Masih Tersedia"
        />
</android.support.constraint.ConstraintLayout>