<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dp" />
            <gradient android:startColor="@color/white" android:centerColor="@color/white"
                android:centerY="0.75" android:endColor="@color/white" android:angle="90" />
            <stroke android:width="1dp" android:color="@color/medium_green" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dp" />
                <gradient android:startColor="@color/green_transparent" android:endColor="@color/green_transparent"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="@color/medium_green" />
            </shape>
        </clip>
    </item>
</layer-list>