<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/black_dimmed"
                android:startColor="@color/pure_transparent" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:bottomRightRadius="8dp"
                    android:topRightRadius="8dp" />
                <gradient
                    android:endColor="@color/second_green"
                    android:startColor="@color/first_green" />
            </shape>
        </clip>
    </item>
</layer-list>