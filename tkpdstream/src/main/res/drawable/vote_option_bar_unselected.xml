<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient android:startColor="@color/base" android:centerColor="@color/base"
                android:centerY="0.75" android:endColor="@color/base" android:angle="90" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="@color/first_white"
                    android:endColor="@color/second_white" />
            </shape>
        </clip>
    </item>
</layer-list>