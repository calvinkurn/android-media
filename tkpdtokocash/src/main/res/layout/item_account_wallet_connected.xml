<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_med">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_small">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:src="@drawable/ic_toped_step_01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_small">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                tools:text="angga.prasetiyo@tokopedia.com" />

            <TextView
                android:id="@+id/tv_registered_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_vs"
                android:textColor="@color/digital_voucher_notes"
                android:textSize="@dimen/fontvs"
                tools:text="Terhubung sejak dahulu kala" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_delete"
        style="@style/Button.Submit.White.Stroke"
        android:layout_height="@dimen/image_width_s"
        android:text="@string/tokocash_unlink_account_button"
        android:textColor="@color/digital_voucher"
        android:textSize="@dimen/fontvs"
        android:visibility="visible"
        tools:visibility="visible" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_med" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:background="@color/digital_separator" />

</LinearLayout>