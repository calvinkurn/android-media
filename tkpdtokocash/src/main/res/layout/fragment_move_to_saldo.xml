<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:paddingTop="@dimen/dp_10"
            android:textSize="@dimen/sp_16"
            tools:text="jabsdjabs;ldablsdla ohasdjha pajsdja;sd jaslkdjlasd jaskdja;sd laskda" />

        <TextView
            android:id="@+id/tv_nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subtitle"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:paddingTop="@dimen/dp_10"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            tools:text="Rp. 500.000" />

        <TextView
            android:id="@+id/btn_positive"
            style="@style/Button.Submit.Orange"
            android:layout_alignParentBottom="true"
            tools:text="@string/tokocash_button_move_saldo" />

        <TextView
            android:id="@+id/btn_negative"
            style="@style/Button.Submit.White.Stroke"
            android:layout_above="@+id/btn_positive"
            android:layout_marginBottom="@dimen/dp_10"
            tools:text="@string/button_label_cancel" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_main_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />
</FrameLayout>