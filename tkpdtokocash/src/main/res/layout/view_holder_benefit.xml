<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/padding_detail"
    android:layout_marginBottom="@dimen/margin_sm">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/activate_ic_tokocash_benefit"
        android:layout_marginTop="@dimen/margin_sm"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:text="@string/benefit_tokocash_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:textSize="@dimen/fontvs"
        android:textStyle="bold"
        android:text="@string/benefit_tokocash_title_item_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:textSize="@dimen/fontvs"
        android:text="@string/benefit_tokocash_detail_item_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_med"
        android:textSize="@dimen/fontvs"
        android:textStyle="bold"
        android:text="@string/benefit_tokocash_title_item_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:textSize="@dimen/fontvs"
        android:text="@string/benefit_tokocash_detail_item_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_med"
        android:textSize="@dimen/fontvs"
        android:textStyle="bold"
        android:text="@string/benefit_tokocash_title_item_3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:textSize="@dimen/fontvs"
        android:text="@string/benefit_tokocash_detail_item_3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_med"
        android:textSize="@dimen/fontvs"
        android:textStyle="bold"
        android:text="@string/benefit_tokocash_title_item_4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_marginBottom="@dimen/margin_vs"
        android:textSize="@dimen/fontvs"
        android:text="@string/benefit_tokocash_detail_item_4"/>

</LinearLayout>