<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        tools:text="Pemindahan Dana ke Saldo Tokopedia Gagal"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_subtitle"
        android:gravity="center"
        android:lineSpacingExtra="5sp"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        tools:text="Rp. 500.000"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/btn_negative"
        style="@style/Button.Submit.White.Stroke"
        android:layout_height="@dimen/tab_height"
        android:layout_below="@+id/tv_description"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="@string/back_to_top"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/btn_positive"
        style="@style/Button.Submit.Green"
        android:layout_height="@dimen/tab_height"
        android:layout_below="@+id/btn_negative"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="@string/back_to_top"
        tools:visibility="visible" />

</RelativeLayout>