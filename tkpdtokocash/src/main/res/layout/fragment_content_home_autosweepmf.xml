<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/mf_padding_regular">

    <TextView
        android:id="@+id/text_title_mutual_fund"
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/mf_padding_medium"
        android:paddingStart="@dimen/mf_padding_medium"
        android:text="@string/mf_label_autosweep_to_mutual_fund"
        android:textSize="@dimen/mf_text_size_medium" />

    <TextView
        android:id="@+id/text_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mf_margin_xsmall"
        android:layout_marginStart="@dimen/mf_margin_xsmall"
        android:background="@drawable/bg_rounded_corners_red"
        android:gravity="center"
        android:padding="@dimen/mf_padding_xxsmall"
        android:text="@string/mf_label_new"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/mf_text_size_xxxsmall"
        app:layout_constraintBottom_toBottomOf="@+id/text_title_mutual_fund"
        app:layout_constraintStart_toEndOf="@+id/text_title_mutual_fund"
        app:layout_constraintTop_toTopOf="@+id/text_title_mutual_fund" />

    <TextView
        android:id="@+id/text_description"
        style="@style/DefaultLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mf_margin_regular"
        android:paddingEnd="@dimen/mf_padding_medium"
        android:paddingLeft="@dimen/mf_padding_medium"
        android:paddingRight="@dimen/mf_padding_medium"
        android:paddingStart="@dimen/mf_padding_medium"
        android:text="@string/mf_message_mf_account_inactive"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/text_title_mutual_fund" />

    <TextView
        android:id="@+id/text_limit_tokocash"
        style="@style/DefaultLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mf_margin_medium"
        android:paddingLeft="@dimen/mf_padding_medium"
        android:paddingStart="@dimen/mf_padding_medium"
        android:text="@string/mf_label_limit_tokocash"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/text_description" />

    <TextView
        android:id="@+id/text_limit_tokocash_value"
        style="@style/MediumValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_arrow_right_default"
        android:drawablePadding="@dimen/mf_padding_small"
        android:drawableRight="@drawable/ic_arrow_right_default"
        android:paddingEnd="@dimen/mf_padding_medium"
        android:paddingRight="@dimen/mf_padding_medium"
        android:textColor="@color/black_87"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_limit_tokocash" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_auto_sweep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mf_margin_medium"
        android:layout_marginRight="@dimen/mf_margin_medium"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/text_title_mutual_fund"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_title_mutual_fund"
        app:thumbTint="@color/tkpd_main_green"
        app:trackTint="@color/mf_tkpd_green_30" />

    <LinearLayout
        android:id="@+id/container_warning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mf_margin_medium"
        android:layout_marginRight="@dimen/mf_margin_medium"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_yellow_border_warning"
        android:orientation="vertical"
        android:padding="@dimen/mf_padding_small"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_limit_tokocash">

        <TextView
            android:id="@+id/text_warning_title"
            style="@style/MediumValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/mf_padding_small"
            android:textSize="@dimen/mf_text_size_small"
            app:layout_constraintTop_toBottomOf="@id/text_limit_tokocash" />

        <TextView
            android:id="@+id/text_warning_message"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mf_margin_xsmall"
            android:textSize="@dimen/mf_text_size_small"
            app:layout_constraintTop_toBottomOf="@id/text_limit_tokocash" />

    </LinearLayout>

    <View
        android:id="@+id/view_line_separator"
        android:layout_width="0dp"
        android:layout_height="@dimen/mf_height_line_separator"
        android:layout_marginTop="@dimen/mf_margin_medium"
        android:background="@color/white_four"
        app:layout_constraintTop_toBottomOf="@+id/container_warning" />

    <Button
        android:id="@+id/button_negative"
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:text="@string/mf_action_learn"
        android:textAllCaps="false"
        android:textColor="@color/grey_warm"
        android:textSize="@dimen/mf_text_size_small"
        app:layout_constraintEnd_toStartOf="@+id/button_positive"
        app:layout_constraintTop_toBottomOf="@+id/view_line_separator" />

    <Button
        android:id="@+id/button_positive"
        style="@style/HeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mf_margin_medium"
        android:layout_marginRight="@dimen/mf_margin_medium"
        android:background="?attr/selectableItemBackground"
        android:text="@string/mf_action_enable"
        android:textAllCaps="false"
        android:textColor="@color/tkpd_main_green"
        android:textSize="@dimen/mf_text_size_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line_separator" />

</android.support.constraint.ConstraintLayout>
