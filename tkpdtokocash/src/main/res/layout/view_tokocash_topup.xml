<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_ms"
        android:paddingLeft="@dimen/padding_detail"
        android:paddingRight="@dimen/padding_detail"
        android:paddingTop="@dimen/padding_ms"
        android:text="@string/tokocash_label_top_up"
        android:textSize="@dimen/fontm"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/balance_tokocash"
        android:layout_marginTop="@dimen/margin_vs"
        android:background="@color/grey_300" />

    <com.tokopedia.digital.product.compoundview.DigitalProductChooserView
        android:id="@+id/digital_product_chooser_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_detail"
        android:paddingRight="@dimen/padding_detail" />

    <CheckBox
        android:id="@+id/cb_instant_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="@dimen/padding_ms"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        android:layout_marginTop="@dimen/padding_ms"
        android:text="@string/label_instant_payment_digital"
        android:textColor="@color/checkbox_text"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/btn_topup"
        style="@style/Button.Submit.Orange"
        android:layout_marginBottom="@dimen/padding_ms"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm"
        android:layout_marginTop="@dimen/padding_ms"
        android:text="@string/label_btn_buy_digital" />

</LinearLayout>