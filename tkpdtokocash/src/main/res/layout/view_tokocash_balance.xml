<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/CardViewWidget.Voucher"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_3"
        app:cardElevation="1dp"
        tools:ignore="HardcodedText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_balance_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_tokocash_icon"
                android:drawablePadding="@dimen/dp_5"
                android:drawableStart="@drawable/ic_tokocash_icon"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/tokocash_label_balance" />

            <TextView
                android:id="@+id/balance_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:textSize="30sp"
                tools:text="Rp. 0" />


            <RelativeLayout
                android:id="@+id/layout_hold_balance"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:visibility="visible">

                <View
                    android:id="@+id/separator1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@color/grey_300" />

                <TextView
                    android:id="@+id/title_hold_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/tokocash_label_hold_balance"
                    android:textSize="@dimen/fontvs" />

                <ImageView
                    android:id="@+id/tooltip_tokocash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator1"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toEndOf="@+id/title_hold_balance"
                    android:layout_toRightOf="@+id/title_hold_balance"
                    android:src="@drawable/info_icon"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/hold_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_hold_balance"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/font_medium"
                    tools:text="Rp 0" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>