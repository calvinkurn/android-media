<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/padding_detail"
        android:paddingRight="@dimen/padding_detail"
        android:paddingTop="@dimen/dp_8"
        android:text="@string/tokocash_label_received"
        android:textSize="@dimen/fontm"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/balance_tokocash"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/grey_300" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_income_tokocash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/income_tokocash"
            android:layout_alignTop="@+id/income_tokocash"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/padding_detail"
            android:paddingRight="@dimen/padding_detail"
            android:paddingTop="@dimen/dp_8"
            android:text="@string/tokocash_label_amount_received" />

        <TextView
            android:id="@+id/income_tokocash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/padding_detail"
            android:paddingRight="@dimen/padding_detail"
            android:paddingTop="@dimen/dp_8"
            android:textSize="@dimen/fontm"
            tools:text="Rp 12.500.000" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar_tokocash_balance"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxHeight="10dip"
        android:minHeight="10dip"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/padding_detail"
        android:paddingRight="@dimen/padding_detail"
        android:paddingTop="@dimen/dp_8"
        android:progressDrawable="@drawable/horizontal_progressbar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="273dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/limit_tokocash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/padding_detail"
            android:paddingRight="@dimen/padding_detail"
            android:paddingTop="@dimen/dp_8"
            android:textSize="@dimen/fontvs"
            android:textStyle="italic" />

    </RelativeLayout>

</LinearLayout>