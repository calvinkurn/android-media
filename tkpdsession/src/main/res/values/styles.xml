<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Dialog" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <!-- removing the dialog's action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="PhoneNumberTextInput">
        <item name="colorControlActivated">@color/medium_green</item>
    </style>

    <style name="LightTitlePageIndicator">
        <item name="footerColor">@color/medium_green</item>
        <item name="footerPadding">15dp</item>
        <item name="topPadding">12dp</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">5dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="selectedBold">true</item>
        <item name="android:textColor">@color/medium_green</item>
        <item name="android:textSize">@dimen/fontvs</item>
        <item name="android:background">@drawable/border_bottom_no_rounded</item>
    </style>
</resources>