<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small_header"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@+id/title_shop_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/shop_info_title"
        android:textColor="@color/font_black_primary_70"
        android:lineSpacingExtra="8sp"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_14"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_shop_profile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:contentDescription="@string/image_product_desc"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_toEndOf="@+id/iv_shop_profile"
            android:layout_toRightOf="@+id/iv_shop_profile"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_gold_shop"
                        android:layout_width="@dimen/large_dp"
                        android:layout_height="@dimen/large_dp"
                        android:src="@drawable/ic_shop_gold"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/iv_official"
                        android:layout_width="@dimen/large_dp"
                        android:layout_height="@dimen/large_dp"
                        android:src="@drawable/ic_badge_official"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/iv_lucky"
                        android:layout_width="@dimen/large_dp"
                        android:layout_height="@dimen/large_dp"
                        android:padding="@dimen/margin_vvs"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />


                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_vs"
                        android:layout_marginStart="@dimen/margin_vs"
                        android:background="@drawable/tab_selector"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        tools:text="Shop Name"
                        android:textColor="@color/font_black_primary_70"
                        android:textSize="@dimen/font_large"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_medal"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/margin_vs"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="horizontal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:orientation="horizontal"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_weight="0.40"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_location"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:src="@drawable/ic_location_grey" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/fontvs"
                    tools:text="Location" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vs"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/last_online_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:src="@drawable/icon_time_grey" />

                <TextView
                    android:id="@+id/tv_last_online"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/fontvs"
                    tools:text="15 Menit" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="0.60"
            android:gravity="end"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:id="@+id/ll_fav_shop"
                style="@style/FavShopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/favorite_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_add_24dp"
                    android:drawableStart="@drawable/ic_add_24dp"
                    android:gravity="center_vertical"
                    android:text="@string/fav_shop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>