<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:scaleType="fitStart"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginRight="@dimen/margin_sm">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black_70"
            android:text="@string/title_welcome"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp_14"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/black_54"
            android:text="@string/sub_title_welcome"
            android:layout_gravity="center"
            android:lineSpacingExtra="@dimen/dp_3"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_32"/>
        
        <TextView
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:textSize="@dimen/text_size_14"
            android:background="@drawable/bg_button_enable"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="@string/welcome_button_continue"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_20"/>

        <TextView
            android:id="@+id/btn_profile_completion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tkpd_main_green"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_size_14"
            android:text="@string/welcome_button_complete"
            android:layout_marginBottom="@dimen/dp_32"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>