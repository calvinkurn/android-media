<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_activity"
    android:layout_marginLeft="@dimen/space_med"
    android:layout_marginTop="@dimen/space_med"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_sm"
        android:lineSpacingExtra="8sp"
        android:text="@string/title_user_information"
        android:textColor="@color/bottom_sheet_item_text_color"
        android:textSize="@dimen/font_small"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_partial_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_med"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="@string/title_user_information_status"
                android:textColor="@color/font_black_disabled_38"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_status_info"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/info_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_status_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="@dimen/margin_vs"
            android:lineSpacingExtra="@dimen/line_spacing_6"
            android:text="@string/status_verified"
            android:textColor="@color/bottom_sheet_item_text_color"
            android:textSize="@dimen/text_size_16"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/separator_color" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_partial_reputation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_reputation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reputation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="@string/title_reputation"
                android:textColor="@color/font_black_disabled_38"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_reputation_info"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/info_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reputation_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_reputation_title"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/ll_reputation_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="44dp"
                    android:layout_marginTop="13dp"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_reputation_summary"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_reputation_positive" />

                    <TextView
                        android:id="@+id/tv_reputation_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/font_sub_headline"
                        tools:text="97%" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_reputation_detail"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="31dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_reputation_positive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_reputation_positive"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_reputation_positive" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reputation_positive"
                            android:textColor="@color/colorSheetTitle"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_reputation_positive_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            tools:text="32" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_reputation_netral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_reputation_netral" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reputation_netral"
                            android:textColor="@color/colorSheetTitle"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_reputation_netral_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            tools:text="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_reputation_negative" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reputation_negative"
                            android:textColor="@color/colorSheetTitle"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_reputation_negative_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            tools:text="0" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>