<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/akun_terverifikasi"
        android:orientation="horizontal"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/space_slightly_med" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/black_54"
        android:lineSpacingExtra="@dimen/text_size_8"
        android:gravity="center_horizontal"
        android:text="Selamat!\nAkun Anda telah terverifikasi"
        />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/space_med" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black_38"
        android:lineSpacingExtra="@dimen/text_size_6"
        android:gravity="center_horizontal"
        android:text="Kini akun Anda menjadi lebih aman dan nikmati\npromo menarik hanya untuk Verified Account"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        tools:text="Lihat Profil Anda"
        />

    <TextView
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:text="Lihat Profil Anda"
        android:padding="@dimen/padding_small"
        android:background="@color/medium_green"
        />

</LinearLayout>
