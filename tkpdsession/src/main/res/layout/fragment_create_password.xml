<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/cards_ui_2"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="@string/title_personal_id"
            android:textSize="@dimen/fontl"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/user_name"
            style="@style/CustomFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/new_edittext_white"
            android:ems="10"
            android:hint="@string/title_name"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"/>

        <LinearLayout
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                style="@style/CustomFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/title_birthday"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/date"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts"
                tools:text="31/12/2143"/>
        </LinearLayout>

        <com.tokopedia.core.customView.PasswordView
            android:id="@+id/password"
            style="@style/CustomFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/new_edittext_white"
            android:ems="10"
            android:hint="@string/title_password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"/>

        <com.tokopedia.core.customView.PasswordView
            android:id="@+id/password_retype"
            style="@style/CustomFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/new_edittext_white"
            android:ems="10"
            android:hint="@string/title_new_password_confirmation"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"/>

        <EditText
            android:id="@+id/phone_number"
            style="@style/CustomFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/new_edittext_white"
            android:ems="10"
            android:hint="@string/title_phone"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/tkpd_bg_color_grery"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tos_tos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_and_conditions"
                android:textColor="@color/href_link"/>

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/tos_tos"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#CCCCCC"/>

            <TextView
                android:id="@+id/tos_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator"
                android:text="@string/privacy"
                android:textColor="@color/href_link"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/tos_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_have_read_and_understand"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts"/>
        </LinearLayout>

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/error_area"
            android:padding="@dimen/dp_10"
            android:text="@string/you_must_agree"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/button_buy_from_cart"
            android:gravity="center"
            android:text="@string/title_register_wo_u"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/fontvs"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>