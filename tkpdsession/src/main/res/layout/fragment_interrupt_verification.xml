<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/verification_icon"
                android:layout_height="@dimen/verification_icon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_large"
                tools:src="@drawable/ic_14_google"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginLeft="@dimen/padding_activity"
                android:layout_marginRight="@dimen/padding_activity"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                tools:text="Hai Jean!"
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_l_medium"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/padding_activity"
                android:layout_marginRight="@dimen/padding_activity"
                android:layout_marginTop="@dimen/margin_large"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/black_54"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="normal"
                tools:text="Kode verifikasi telah dikirimkan ke**** - **** - *041."
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:padding="@dimen/padding_small"
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal"
                android:visibility="visible"
                android:text="@string/please_click_this_button_to_continue"
                />


            <TextView
                android:id="@+id/request_otp_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:background="@drawable/green_button_rounded_unify"
                android:fontFamily="sans-serif"
                android:gravity="center"
                tools:text="@string/button_verify"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_s_medium"
                android:textStyle="bold"
                />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>