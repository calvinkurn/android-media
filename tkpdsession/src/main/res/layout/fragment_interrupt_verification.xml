<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/verification_icon"
                android:layout_height="@dimen/verification_icon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_30"
                tools:src="@drawable/ic_14_google"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/padding_activity"
                android:layout_marginRight="@dimen/padding_activity"
                android:layout_marginTop="@dimen/dp_15"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="@string/verification_for_security"
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_l_medium"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/padding_activity"
                android:layout_marginRight="@dimen/padding_activity"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/black_54"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="normal"
                tools:text="Untuk memastikan akun ini benar milik Anda, kami akan mengirimkan kode verifikasi melalui SMS ke **** - **** - *041."
                />

            <TextView
                android:id="@+id/request_otp_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/green_button_rounded_unify"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_s_medium"
                android:textStyle="bold"
                tools:text="@string/button_verify"
                />

            <TextView
                android:id="@+id/choose_other_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:padding="@dimen/dp_10"
                android:text="@string/login_with_other_method"
                android:textColor="@color/medium_green"
                android:textSize="12sp"
                android:textStyle="normal"
                />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>