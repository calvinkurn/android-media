<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:paddingTop="@dimen/new_margin_med"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_margin_med"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_med">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/profile_avatar_size"
            android:layout_height="@dimen/profile_avatar_size"
            android:layout_marginEnd="@dimen/new_margin_med"
            android:layout_marginRight="@dimen/new_margin_med"
            tools:src="@drawable/ic_set_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="@dimen/space_extra_sm"
                android:textColor="@color/black_70"
                android:textSize="@dimen/font_small"
                android:textStyle="normal"
                android:drawablePadding="@dimen/title_kol_space"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                tools:drawableLeft="@drawable/ic_kol_badge"
                tools:text="Benny Alexandra Dia Dan Aku Selalu Bersama Huahahahaha" />

            <LinearLayout
                android:id="@+id/button_manage_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_white_enabled_border"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingBottom="@dimen/new_margin_small"
                android:paddingTop="@dimen/new_margin_small"
                android:visibility="gone"
                tools:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/action_icon_size"
                    android:layout_height="@dimen/action_icon_size"
                    android:layout_marginEnd="@dimen/card_view_margin"
                    android:layout_marginRight="@dimen/card_view_margin"
                    android:gravity="center_horizontal"
                    app:srcCompat="@drawable/icon_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="@dimen/space_extra_sm"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/new_text_size_small"
                    android:text="@string/manage_profile"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_follow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_green_enabled"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingBottom="@dimen/new_margin_small"
                android:paddingTop="@dimen/new_margin_small"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/button_follow_image"
                    android:layout_width="@dimen/action_icon_size"
                    android:layout_height="@dimen/action_icon_size"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_new_action_plus" />

                <TextView
                    android:id="@+id/button_follow_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="@dimen/space_extra_sm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/new_text_size_small"
                    android:text="@string/follow"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_kol_space"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="@dimen/space_extra_med"
        android:textColor="@color/black_54"
        android:textSize="@dimen/new_text_size_small"
        tools:text="Footballer"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_med"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_margin_med"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/space_extra_xs"
        android:textColor="@color/black_54"
        android:textSize="@dimen/new_text_size_small"
        tools:text="I am is an English former professional footballer. He played for Manchester United."
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_med"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/new_margin_sm"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_med"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/following_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/following_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black_70"
                android:textSize="@dimen/new_text_size_input"
                android:textStyle="normal"
                tools:text="364" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="normal"
                android:text="@string/following" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/separator_size"
            android:layout_height="match_parent"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:id="@+id/followers_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/followers_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black_70"
                android:textSize="@dimen/new_text_size_input"
                android:textStyle="normal"
                tools:text="1M" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="normal"
                android:text="@string/followers" />
        </LinearLayout>

        <View
            android:id="@+id/followers_separator"
            android:layout_width="@dimen/separator_size"
            android:layout_height="match_parent"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:id="@+id/favorite_shop_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/favorite_shop_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black_70"
                android:textSize="@dimen/new_text_size_input"
                android:textStyle="normal"
                tools:text="1.532" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="normal"
                android:text="@string/favorite_shop" />
        </LinearLayout>
    </LinearLayout>
    
    <View
        android:id="@+id/header_separator"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/separator_size"
        android:background="@color/grey_400"/>
</LinearLayout>