<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/margin_sm">

    <include
        layout="@layout/layout_add_password_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/wrapper_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sm"
        app:passwordToggleEnabled="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_password"
            android:hint="@string/title_add_password_hint"
            android:textColorHint="@color/black_54"
            android:textColor="@color/black_70"
            android:inputType="textPassword"
            android:textSize="@dimen/font_medium"
            android:layout_marginTop="@dimen/margin_sm"
            />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_password_min_char"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/black_38"
        android:layout_marginTop="@dimen/margin_ms"/>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/red_500"
        android:lineSpacingExtra="4sp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Nomor ponsel belum terdaftar"
        />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/button_password_continue"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_enable"
        android:layout_marginTop="@dimen/margin_sm"/>

</LinearLayout>