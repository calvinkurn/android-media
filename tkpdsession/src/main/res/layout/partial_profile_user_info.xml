<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_activity"
        android:layout_marginLeft="@dimen/space_med"
        android:layout_marginStart="@dimen/space_med"
        android:layout_marginTop="@dimen/space_med">

        <LinearLayout
            android:id="@+id/ll_title_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_sm"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="@string/title_user_information"
                android:textColor="@color/font_black_primary_70"
                android:textSize="@dimen/font_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_subtitle_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6sp"
                android:text="@string/subtitle_user_data"
                android:textColor="@color/font_black_disabled_38"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone"
                android:textStyle="normal" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_partial_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title_user_info"
            android:layout_marginBottom="@dimen/space_med"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:fontFamily="sans-serif"
                    android:text="@string/title_user_information_status"
                    android:textColor="@color/font_black_secondary_54"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/iv_status_info"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/info_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_status_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_status_title"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="@dimen/margin_vs"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="@dimen/line_spacing_6"
                android:text="@string/status_verified"
                android:textColor="@color/font_black_primary_70"
                android:textSize="@dimen/text_size_16"
                android:textStyle="italic" />

            <View
                android:id="@+id/view_status_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tv_status_verified"
                android:background="@color/separator_color" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_partial_reputation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_partial_status">

            <LinearLayout
                android:id="@+id/ll_reputation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reputation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_vs"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:fontFamily="sans-serif"
                    android:text="@string/title_reputation"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/iv_reputation_info"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/info_icon" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_reputation_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_reputation_title"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/ll_reputation_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="44dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="44dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_reputation_summary"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_reputation_positive" />

                    <TextView
                        android:id="@+id/tv_reputation_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/font_black_secondary_54"
                        android:textSize="@dimen/font_sub_headline"
                        android:textStyle="bold"
                        tools:text="97%" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ll_reputation_detail"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="31dp"
                    android:layout_marginRight="31dp"
                    android:layout_toEndOf="@id/ll_reputation_summary"
                    android:layout_toRightOf="@+id/ll_reputation_summary"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_reputation_positive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_reputation_positive"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_reputation_positive" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/reputation_positive"
                            android:textColor="@color/font_black_secondary_54"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_reputation_positive_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:textColor="@color/font_black_secondary_54"
                            android:textStyle="normal"
                            tools:text="32" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_reputation_netral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_reputation_positive"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_reputation_netral" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/reputation_netral"
                            android:textColor="@color/font_black_secondary_54"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_reputation_netral_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:textColor="@color/font_black_secondary_54"
                            android:textStyle="normal"
                            tools:text="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_reputation_netral"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_reputation_negative" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/reputation_negative"
                            android:textColor="@color/font_black_secondary_54"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_reputation_negative_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:textColor="@color/font_black_secondary_54"
                            android:textStyle="normal"
                            tools:text="0" />
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>