<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/default_big_icon"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_tokocash_phone_not_connected"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5sp"
            tools:text="@string/phone_number_not_connected_to_tokocash"
            android:textColor="@color/black_70"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4sp"
            tools:text="@string/not_connected_tokocash_message"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_size_12"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/action_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@drawable/green_button_rounded_unify"
            android:fontFamily="sans-serif"
            android:gravity="center"
            tools:text="@string/verify_phone_number"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/login_other_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_sm"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="7sp"
            android:padding="@dimen/padding_small"
            android:text="@string/login_with_other_method"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal"
            />
    </LinearLayout>
</RelativeLayout>