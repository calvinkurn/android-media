<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/register_icon"
        android:layout_width="@dimen/width_icon_register"
        android:layout_height="@dimen/height_icon_register"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:layout_marginTop="@dimen/dp_32"
        app:srcCompat="@drawable/icon_register" />

    <TextView
        android:id="@+id/title_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:text="@string/validation_title"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activation_text"
        android:layout_below="@id/title_verify"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="@color/black_54"
        android:lineSpacingExtra="@dimen/dp_3"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dp_20"

        android:gravity="center"
        tools:text="Kode aktivasi akun telah dikirimkan ke tjangjialie@gmail.com" />

    <LinearLayout
        android:id="@+id/llotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activation_text"
        android:orientation="horizontal">

        <com.tkpd.library.ui.widget.PinEntryEditText
            android:id="@+id/input_verify_code"
            android:layout_width="@dimen/layout_250"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:fontFamily="sans-serif-medium"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="5"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/black_70"
            android:textIsSelectable="false"
            android:textSize="@dimen/sp_32"
            android:textStyle="normal"
            android:visibility="visible"
            app:pinLineColors="@color/pin_line_colors"
            tools:text="123123" />

    </LinearLayout>

    <ImageView
        android:layout_toRightOf="@id/llotp"
        android:id="@+id/error_image"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        app:srcCompat="@drawable/ic_cancel_red"
        android:layout_alignBottom="@id/llotp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/error_otp"
        android:layout_below="@id/llotp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:text="@string/error_wrong_otp"
        android:textColor="@color/red_500"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/verify_button"
        android:layout_below="@id/llotp"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grey_button_rounded"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/title_validation_otp"
        android:textColor="@color/black_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/footer"
        android:layout_below="@id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black_38"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/validation_resend_email" />


</RelativeLayout>