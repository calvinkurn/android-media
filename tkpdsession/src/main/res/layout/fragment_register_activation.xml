<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/register_icon"
        android:layout_width="@dimen/width_icon_register"
        android:layout_height="@dimen/height_icon_register"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:layout_marginTop="@dimen/dp_32"
        app:srcCompat="@drawable/icon_register" />

    <TextView
        android:id="@+id/title_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/activation_title"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activation_text"
        android:layout_below="@id/title_verify"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="@color/black_70"
        android:lineSpacingExtra="3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dp_20"

        android:gravity="center"
        tools:text="Kode aktivasi akun telah dikirimkan ke tjangjialie@gmail.com" />


    <com.tkpd.library.ui.widget.PinEntryEditText
        android:id="@+id/input_verify_code"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activation_text"
        android:background="@null"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:layout_marginTop="@dimen/dp_24"
        android:fontFamily="sans-serif-medium"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="5"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/black_70"
        android:textIsSelectable="false"
        android:textSize="32sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:pinLineColors="@color/pin_line_colors"
        tools:text="123123" />

    <TextView
        android:id="@+id/verify_button"
        android:layout_below="@id/input_verify_code"
        android:layout_width="240dp"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grey_button_rounded"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/title_activation_otp"
        android:textColor="@color/black_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/footer"
        android:layout_below="@id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black_38"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/activation_resend_email_2" />


</RelativeLayout>