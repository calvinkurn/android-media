<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/margin_med">

        <ImageView
            android:id="@+id/img_app_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large"
            app:srcCompat="@drawable/ic_referral_tokocash" />

        <TextView
            android:id="@+id/tv_app_share_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_app_share"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_sm"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="@string/app_share_label_desc"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/tv_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_app_share_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_sm"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:padding="@dimen/margin_sm"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/font_medium"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/btn_activation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phone_number"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@color/green_btn"
            android:gravity="center_horizontal|center_vertical"
            android:padding="@dimen/margin_sm"
            android:text="@string/verify_phone_number"
            android:textColor="@color/white"
            android:textSize="@dimen/fonts" />
    </RelativeLayout>

</FrameLayout>