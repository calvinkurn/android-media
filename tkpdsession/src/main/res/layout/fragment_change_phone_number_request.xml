<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tkpd_bg_color"
        android:focusableInTouchMode="true"
        android:visibility="invisible"
        tools:visibility="visible">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:text="@string/id_photo"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:text="@string/info_id_photo"
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/fontvs" />

                <ImageView
                    android:id="@+id/upload_id_photo_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_med"
                    android:layout_marginTop="@dimen/margin_small"
                    android:src="@drawable/ic_add_photo"
                    android:visibility="visible"
                    tools:visibility="visible" />


                <RelativeLayout
                    android:id="@+id/upload_id_photo_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:layout_marginLeft="@dimen/margin_med"
                    android:layout_marginRight="@dimen/margin_med"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/cards_ui_2"
                    android:visibility="gone"
                    tools:visibility="gone">


                    <ImageView
                        android:id="@+id/photo_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_add_photo" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/cards_ui"
                        android:padding="@dimen/padding_vs"
                        android:src="@drawable/ic_edit" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/cards_ui_2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:text="@string/saving_book_photo_or_transaction_proof"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_small"
                    android:text="@string/info_bank_account"
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/fontvs" />

                <ImageView
                    android:id="@+id/upload_account_book_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_small"
                    android:src="@drawable/ic_add_photo"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/upload_account_book_photo_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:layout_marginLeft="@dimen/margin_med"
                    android:layout_marginRight="@dimen/margin_med"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/cards_ui_2"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <ImageView
                        android:id="@+id/photo_account_book"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        tools:src="@drawable/ic_add_photo" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/cards_ui"
                        android:padding="@dimen/padding_vs"
                        android:src="@drawable/ic_edit" />

                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/grey_button_rounded"
                android:text="@string/send"
                android:textColor="@color/grey_500" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>