<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tkpd_bg_color"
    android:focusableInTouchMode="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_small"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:gravity="center"
                android:text="@string/info_change_phone_number_request" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_med"
                android:layout_marginRight="@dimen/margin_med"
                android:gravity="center"
                android:text="@string/info_change_phone_number_request_2"
                android:textSize="@dimen/fontvs" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cards_ui_2"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_small"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id_photo"
            android:padding="@dimen/padding_small"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_id_photo"
            android:padding="@dimen/padding_small"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/fontvs" />

        <ImageView
            android:id="@+id/upload_id_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:src="@drawable/ic_add_photo"
            android:layout_marginBottom="@dimen/margin_med"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/photo_id"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add_photo"
            android:layout_marginBottom="@dimen/margin_med"
            android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cards_ui_2"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_small"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saving_book_photo_or_transaction_proof"
                android:padding="@dimen/padding_small"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_bank_account"
                android:padding="@dimen/padding_small"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/fontvs" />

            <ImageView
                android:id="@+id/upload_account_book_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/ic_add_photo"
                android:layout_marginBottom="@dimen/margin_med"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/photo_account_book"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:scaleType="centerInside"
                android:src="@drawable/ic_add_photo"
                android:layout_marginBottom="@dimen/margin_med"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/green_button_rounded"
            android:text="@string/send"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>