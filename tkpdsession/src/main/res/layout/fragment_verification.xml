<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/limit_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red_100"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red_500"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/padding_activity"
            android:paddingLeft="@dimen/padding_small_sm"
            android:paddingRight="@dimen/padding_small_sm"
            android:paddingTop="@dimen/padding_activity"
            android:text="@string/limit_otp_reached"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Anda sudah 3 kali melakukan pengiriman  ulang, silakan coba lagi dalam 60 menit."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/limit_otp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/verification_icon"
            android:layout_height="@dimen/verification_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_large"
            tools:src="@drawable/ic_14_google"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_sm"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:text="@string/enter_verification_code"
            android:textColor="@color/black_70"
            android:textSize="@dimen/text_size_l_medium"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black_54"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal"
            tools:text="Kode verifikasi telah dikirimkan ke
**** - **** - *041."
            />

        <com.tkpd.library.ui.widget.PinEntryEditText
            android:id="@+id/input_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_vl"
            android:layout_marginRight="@dimen/margin_vl"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="6"
            android:paddingBottom="@dimen/margin_small"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:visibility="visible"
            app:pinLineColors="@color/pin_line_colors"/>

        <TextView
            android:id="@+id/error_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:text="@string/error_wrong_otp"
            android:textColor="@color/red_500"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal"
            android:visibility="invisible"
            tools:visibility="visible"
            />


        <TextView
            android:id="@+id/verify_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/grey_button_rounded"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/button_verify"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/text_size_s_medium"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/countdown_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_med"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal"
            tools:text="Mohon tunggu dalam 30 detik untuk kirim ulang
atau gunakan metode verifikasi lain"
            />
    </LinearLayout>


</RelativeLayout>