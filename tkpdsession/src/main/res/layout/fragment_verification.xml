<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/verification_icon"
            android:layout_height="@dimen/verification_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_large"
            tools:src="@drawable/ic_14_google"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_sm"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:text="@string/enter_verification_code"
            android:textColor="@color/black_70"
            android:textSize="@dimen/text_size_l_medium"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/black_54"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal"
            tools:text="Kode verifikasi telah dikirimkan ke
**** - **** - *041."
            />

        <com.tkpd.library.ui.widget.PinEntryEditText
            android:id="@+id/input_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_vl"
            android:layout_marginRight="@dimen/margin_vl"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="6"
            android:paddingBottom="@dimen/margin_small"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:visibility="visible"
            app:pinLineColors="@color/pin_line_colors"/>

        <TextView
            android:id="@+id/verify_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/grey_button_rounded"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/text_size_s_medium"
            android:textStyle="bold"
            tools:text="Verifikasi"
            />

        <TextView
            android:id="@+id/countdown_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_med"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal"
            tools:text="Mohon tunggu dalam 30 detik untuk kirim ulang
atau gunakan metode verifikasi lain"
            />
    </LinearLayout>
</ScrollView>