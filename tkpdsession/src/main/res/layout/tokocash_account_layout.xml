<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_view"
                android:background="@drawable/selectable_white_background"
                android:orientation="vertical">

    <com.tokopedia.core.customView.RoundedCornerImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/verification_icon"
        android:layout_height="@dimen/verification_icon"
        android:layout_marginBottom="@dimen/margin_sm"
        android:layout_marginLeft="@dimen/padding_activity"
        android:layout_marginTop="@dimen/margin_sm"
        tools:src="@drawable/addproduct"/>

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.5"
        android:padding="@dimen/padding_small_sm"
        android:src="@drawable/chevron_thin_right"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginStart="@dimen/margin_sm"
        android:layout_marginTop="@dimen/margin_sm"
        android:layout_toEndOf="@id/avatar"
        android:layout_toLeftOf="@id/arrow_right"
        android:layout_toRightOf="@id/avatar"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:maxLines="1"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        tools:text="Farrah Nurul Fatimah"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="@dimen/margin_sm"
        android:layout_marginStart="@dimen/margin_sm"
        android:layout_toEndOf="@id/avatar"
        android:layout_toLeftOf="@id/arrow_right"
        android:layout_toRightOf="@id/avatar"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/black_54"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        tools:text="pendekar.naga@yahoo.com"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/avatar"
        android:layout_marginLeft="@dimen/padding_activity"
        android:background="@color/grey_300"/>

</RelativeLayout>