<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/limit_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fdebec"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f05f68" />

        <TextView
            android:id="@+id/limit_otp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="@dimen/padding_activity"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/padding_activity"
            android:text="@string/limit_otp_reached"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Anda sudah 3 kali melakukan pengiriman  ulang, silakan coba lagi dalam 60 menit." />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/limit_otp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/verification_icon"
                android:layout_height="@dimen/verification_icon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_30"
                app:srcCompat="@drawable/ic_verification_email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="@string/enter_verification_code"
                android:textColor="@color/black_70"
                android:textSize="@dimen/text_size_l_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/padding_activity"
                android:layout_marginRight="@dimen/padding_activity"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/black_54"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="normal"
                tools:text="Kode verifikasi telah dikirimkan melalui email ke ilham.jamaludin@tokopedia.com." />

            <com.tkpd.library.ui.widget.PinEntryEditText
                android:id="@+id/input_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:paddingBottom="@dimen/dp_10"
                android:textIsSelectable="false"
                android:textSize="32sp"
                android:visibility="visible"
                app:pinLineColors="@color/pin_line_colors" />

            <TextView
                android:id="@+id/error_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text="@string/error_wrong_otp"
                android:textColor="@color/red_500"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal"
                android:visibility="invisible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/verify_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/grey_button_rounded"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/button_verify"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/text_size_s_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/countdown_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:padding="@dimen/dp_10"
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_small"
                android:textStyle="normal"
                android:visibility="visible"
                tools:text="Mohon tunggu dalam 30 detik untuk kirim ulang"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/finish_countdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/not_received_code"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/resend"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>