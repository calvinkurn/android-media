<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/white"
              android:padding="@dimen/padding_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/register_with_phone_number"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_xlarge"
        tools:text="Masuk dengan nomor ponsel"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:paddingTop="@dimen/padding_activity"
        android:text="@string/phone_number"
        android:textColor="@color/black_54"
        android:textSize="@dimen/text_size_small"
        tools:text="Nomor ponsel"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:inputType="phone"
        android:imeOptions="actionNext"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="end"
        android:text="@string/we_will_send_verification_code"
        android:textColor="@color/black_38"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        tools:text="Kami akan mengirimkan SMS kode verifikasi"
        />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/red_500"
        android:lineSpacingExtra="4sp"
        tools:visibility="invisible"
        tools:text="Nomor ponsel belum terdaftar"
        />

    <TextView
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_sm"
        android:background="@drawable/green_button_rounded"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        />

</LinearLayout>