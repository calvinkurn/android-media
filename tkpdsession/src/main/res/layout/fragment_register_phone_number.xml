<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/white"
              android:padding="@dimen/padding_activity">

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapper_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/HintTextInputLayout"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:paddingLeft="-5dp"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_3">

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:layout_height="wrap_content"/>

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/register_we_will_send_verification_code"
        android:textColor="@color/black_38"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        tools:text="Kami akan mengirimkan SMS kode verifikasi"
        />

    <TextView
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_button_enable"
        android:fontFamily="roboto-medium"
        android:gravity="center"
        android:text="@string/register"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        />

    <TextView
        android:id="@+id/botton_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_11"
        android:textStyle="normal"
        android:textColor="@color/black_38"
        android:layout_gravity="center"
        android:lineSpacingExtra="4sp"
        android:layout_marginTop="@dimen/margin_sm"
        android:gravity="center_horizontal"
        android:text="@string/string_bottom_info"
        tools:text="@string/string_bottom_info"
        android:visibility="gone"
        />
</LinearLayout>