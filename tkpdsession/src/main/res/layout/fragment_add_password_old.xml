<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_24"
    android:paddingRight="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16">

    <include
        layout="@layout/layout_add_password_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  
    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_3"
        app:text_field_input_type="textPassword"
        app:text_field_label="@string/title_add_password_hint"
        app:text_field_label_static="true" />

    <TextView
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/button_password_continue"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_enable"
        android:layout_marginTop="@dimen/dp_16"/>

</LinearLayout>