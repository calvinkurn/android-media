<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_24"
    android:paddingLeft="@dimen/margin_sm"
    android:paddingRight="@dimen/margin_sm">

    <include
        layout="@layout/layout_name_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapper_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextInputLayout"
        android:hint="@string/title_name_full"
        android:paddingLeft="-3dp"
        android:layout_marginTop="@dimen/dp_32">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_name"
            android:textColorHint="@color/black_54"
            android:textColor="@color/black_70"
            android:inputType="textCapWords|textPersonName"
            android:textSize="@dimen/font_medium"
            android:maxLength="128"
            />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black_38"
        android:text="@string/error_minimal_name"
        android:layout_marginTop="@dimen/dp_3"
        />

    <TextView
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/button_name_continue"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        android:background="@drawable/bg_button_enable"
        android:layout_marginTop="@dimen/dp_16"/>

</LinearLayout>