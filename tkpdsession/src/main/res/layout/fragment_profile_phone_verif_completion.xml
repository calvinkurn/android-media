<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/space_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:text="@string/title_verif_phone_prof_comp"
        android:textColor="@color/black_70"
        android:textSize="@dimen/text_size_16"
        android:textStyle="normal" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/space_large" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/title_phone_number"
                android:textColor="@color/black_54"
                android:textSize="@dimen/text_size_12"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="normal"
                    tools:text="0812-8409-8888" />

                <TextView
                    android:id="@id/change_phone_number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/button_change"
                    android:textColor="@color/medium_green"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="normal" />

            </RelativeLayout>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="@dimen/space_large" />

            <LinearLayout
                android:id="@+id/verification_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tokocash_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_large"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/tokocash_phone_verification_text"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="normal" />

                <TextView
                    android:id="@id/send_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/prof_comp_bg_textview_rounded"
                    android:backgroundTint="@color/medium_green"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:minWidth="190dp"
                    android:padding="@dimen/dp_10"
                    android:text="@string/send_otp_sms"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_otp_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/countdown_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/prof_comp_bg_textview_rounded_white"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:minWidth="190dp"
                    android:padding="@dimen/dp_10"
                    android:text="@string/title_resend_otp_sms"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/text_size_13"
                    android:textStyle="normal" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_vs" />

                <TextView
                    android:id="@+id/send_otp_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/via_call"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="normal" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_very_large" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif"
                    android:text="@string/title_otp"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="normal" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_small" />

                <com.tkpd.library.ui.widget.PinEntryEditText
                    android:id="@+id/input_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_40"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:digits="1234567890"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingBottom="@dimen/dp_10"
                    android:textIsSelectable="false"
                    android:textSize="28sp"
                    app:pinLineColors="@color/pin_line_colors" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
