<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/space_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/black_70"
        android:lineSpacingExtra="4sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/title_verif_phone_prof_comp"
        />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/space_large" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_12"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/black_54"
        android:text="@string/title_phone_number"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_70"
            tools:text="0812-8409-8888"
            />

        <TextView
            android:id="@id/change_phone_number_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/medium_green"
            android:layout_alignParentRight="true"
            android:text="@string/button_change"
            />

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="@dimen/space_large" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/verification_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tokocash_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/black_38"
                    android:lineSpacingExtra="8sp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/space_large"
                    android:text="@string/tokocash_phone_verification_text"
                    />

                <TextView
                    android:id="@id/send_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="190dp"
                    android:textSize="@dimen/text_size_13"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:background="@color/medium_green"
                    android:text="@string/send_otp_sms"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_otp_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/countdown_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="190dp"
                    android:textSize="@dimen/text_size_13"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/black_54"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bg_white_border_grey"
                    android:padding="@dimen/padding_small"
                    android:backgroundTint="@color/white"
                    android:text="@string/title_resend_otp_sms"
                    />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_vs"
                    />

                <TextView
                    android:id="@+id/send_otp_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/black_38"
                    android:lineSpacingExtra="8sp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/via_call"
                    />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_very_large"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/black_70"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/title_otp"
                    />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_vs"
                    />

                <com.tkpd.library.ui.widget.PinEntryEditText
                    android:id="@+id/input_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:layout_marginLeft="@dimen/margin_vl"
                    android:layout_marginRight="@dimen/margin_vl"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:digits="1234567890"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingBottom="@dimen/margin_small"
                    android:textIsSelectable="false"
                    android:textSize="28sp"
                    app:pinLineColors="@color/pin_line_colors" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
