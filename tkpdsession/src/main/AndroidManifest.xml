<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.session">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".session.activity.Login"
            android:label="@string/title_activity_login"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".forgotpassword.activity.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".register.view.activity.RegisterEmailActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".activation.view.activity.ActivationActivity"
            android:label="@string/title_activity_activation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name="com.tokopedia.otp.phoneverification.activity.PhoneVerificationActivationActivity"
            android:label="@string/title_activity_phone_verification"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.tokopedia.otp.phoneverification.activity.PhoneVerificationProfileActivity"
            android:label="@string/title_activity_phone_verification"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.tokopedia.otp.phoneverification.activity.ChangePhoneNumberActivity"
            android:label="@string/title_activity_change_phone_number"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.tokopedia.session.changephonenumber.activity.ChangePhoneNumberRequestActivity"
            android:label="@string/title_change_phone_number_request"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tokopedia.session.activation.view.activity.ChangeEmailActivity"
            android:label="@string/button_change_email"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <service
            android:name=".session.intentservice.LoginService"
            android:exported="false" />
        <service
            android:name=".session.intentservice.ResetPasswordService"
            android:exported="false" />
        <service
            android:name=".session.intentservice.RegisterService"
            android:exported="false" />
        <service
            android:name=".session.intentservice.OTPService"
            android:exported="false" />

        <receiver
            android:name="com.tokopedia.core.service.ErrorNetworkReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.tokopedia.tkpd.FORCE_LOGOUT" />
                <action android:name="com.tokopedia.tkpd.SERVER_ERROR" />
                <action android:name="com.tokopedia.tkpd.TIMEZONE_ERROR" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".register.view.activity.SmartLockActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DialogTheme" />
    </application>

</manifest>