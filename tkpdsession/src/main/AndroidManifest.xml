<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.tokopedia.session">

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0"
            tools:replace="android:value"/>

        <activity
            android:name=".forgotpassword.activity.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity
            android:name="com.tokopedia.profilecompletion.view.activity.ProfileCompletionActivity"
            android:label="@string/profile_completion_title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".register.view.activity.SmartLockActivity"
            android:theme="@style/AppTheme.Dialog"/>

        <activity
            android:name=".register.view.activity.CreatePasswordActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".addchangeemail.view.activity.AddEmailActivity"
            android:label="@string/title_add_email"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".addchangepassword.view.activity.AddPasswordActivity"
            android:label="@string/title_add_password"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".changename.view.activity.ChangeNameActivity"
            android:label="@string/title_change_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".register.registerphonenumber.view.activity.AddNameRegisterPhoneActivity"
            android:label="@string/title_add_name_empty"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".addname.AddNameActivity"
            android:label="@string/title_add_name_empty"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".addchangeemail.view.activity.AddEmailVerificationActivity"
            android:label="@string/title_verify"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>