<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.tokopedia.session">

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".forgotpassword.activity.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:path="@string/path_forgot_password"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.profilecompletion.view.activity.ProfileCompletionActivity"
            android:label="@string/profile_completion_title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".register.view.activity.SmartLockActivity"/>

        <activity
            android:name=".register.view.activity.CreatePasswordActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".addchangepassword.view.activity.AddPasswordActivity"
            android:label="@string/title_add_password"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_global"
                    android:path="@string/path_add_password"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".register.registerphonenumber.view.activity.AddNameRegisterPhoneActivity"
            android:label="@string/title_add_name_empty"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".addname.AddNameActivity"
            android:label="@string/title_add_name_empty"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".register.view.activity.TermPrivacy"
            android:label="@string/title_activity_term_and_privacy"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="launch.TermPrivacy" />
            </intent-filter>
        </activity>
    </application>

</manifest>