<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/icon_default"
        android:layout_width="@dimen/image_width_m"
        android:layout_height="@dimen/image_width_m"
        android:src="@drawable/image_circle"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_amenity"
        android:layout_width="@dimen/image_width_xs"
        android:layout_height="@dimen/image_width_xs"
        android:layout_marginBottom="@dimen/margin_vs"
        tools:src="@drawable/ic_badge_diamond" />

    <TextView
        android:id="@+id/text_amenity"
        style="@style/TextView.Small.BlackSecondary"
        tools:text="Wi-fi" />
</LinearLayout>