<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@+id/title_info"
        style="@style/TextView.Body1.Bold"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:text="Jarak antar kursi" />

    <TextView
        android:id="@+id/view_separator"
        android:layout_toRightOf="@+id/title_info"
        style="@style/TextView.Body1.Bold"
        android:layout_marginLeft="@dimen/margin_vvs"
        android:layout_marginRight="@dimen/margin_vvs"
        android:text=":" />

    <TextView
        android:layout_alignTop="@+id/title_info"
        android:layout_toRightOf="@+id/view_separator"
        android:id="@+id/desc_info"
        style="@style/TextView.Body1.BlackSecondary"
        tools:text="34 inci" />
</RelativeLayout>