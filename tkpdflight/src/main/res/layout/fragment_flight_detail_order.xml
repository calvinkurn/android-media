<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/button_submit"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_200"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_med">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_sm"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_status"
                    android:layout_width="@dimen/image_width_m"
                    android:layout_height="@dimen/image_width_m"
                    android:layout_marginRight="@dimen/margin_vs"
                    android:src="@drawable/ic_flight_round" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextView.Caption.BlackDisabled"
                        android:layout_toRightOf="@id/icon_status"
                        android:text="@string/flight_label_status" />

                    <TextView
                        android:id="@+id/status_ticket"
                        style="@style/TextView.Caption"
                        tools:text="Tiket dibatalkan" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/margin_sm"
                android:background="@drawable/bg_line_separator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_vvvs"
                android:paddingTop="@dimen/padding_vvvs"
                android:weightSum="2">

                <TextView
                    style="@style/TextView.Body1.BlackSecondary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/flight_label_transaction_date" />

                <TextView
                    android:id="@+id/transaction_date"
                    style="@style/TextView.Body1.Bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    tools:text="1 Sep 2017, 05:00 WIB" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/margin_sm"
                android:layout_marginTop="@dimen/margin_sm"
                android:background="@drawable/bg_line_separator" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/container_download_eticket"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView.Body1.BlackSecondary"
                        android:text="@string/flight_label_order_id_detail" />

                    <TextView
                        android:id="@+id/order_id_detail"
                        style="@style/TextView.Body1.BlackPrimary"
                        android:layout_marginRight="@dimen/margin_vs"
                        tools:text="323088926194" />

                    <ImageView
                        android:id="@+id/copy_order_id"
                        android:layout_width="@dimen/image_width_xs"
                        android:layout_height="@dimen/image_width_xs"
                        android:src="@drawable/ic_copy_order" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_download_eticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/image_width_xxs"
                        android:layout_height="@dimen/image_width_xxs"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:src="@drawable/ic_download_eticket" />

                    <TextView
                        style="@style/TextView.Body1.Green"
                        android:text="@string/flight_label_eticket" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <com.tokopedia.flight.detail.view.adapter.FlightDetailRecyclerView
            android:id="@+id/recycler_view_flight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:nestedScrollingEnabled="false"
            android:paddingLeft="@dimen/padding_med"
            android:paddingRight="@dimen/padding_med"
            android:paddingTop="@dimen/padding_med" />

        <TextView
            style="@style/TextView.Caption.BlackDisabled"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:padding="@dimen/padding_med"
            android:text="@string/flight_label_cek_t_and_c" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_med"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.Title.Bold"
                android:padding="@dimen/padding_med"
                android:text="@string/flight_label_passenger_data" />

            <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
                android:id="@+id/recycler_view_data_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/padding_med"
                android:paddingLeft="@dimen/padding_med"
                android:paddingRight="@dimen/padding_med" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_med">

                <TextView
                    style="@style/TextView.Title.Bold"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/container_download_invoice"
                    android:text="@string/flight_label_detail_price" />

                <LinearLayout
                    android:id="@+id/container_download_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/image_width_xxs"
                        android:layout_height="@dimen/image_width_xxs"
                        android:layout_marginRight="@dimen/margin_vs"
                        android:src="@drawable/ic_download_eticket" />

                    <TextView
                        style="@style/TextView.Body1.Green"
                        android:text="@string/flight_label_invoice" />

                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="@dimen/padding_med"
                android:paddingRight="@dimen/padding_med" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_med">

                <TextView
                    style="@style/TextView.Body1.Bold"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/total_price"
                    android:text="@string/flight_label_price_total" />

                <TextView
                    android:id="@+id/total_price"
                    style="@style/TextView.Title.Bold"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    tools:text="Rp. 500.0000" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/padding_med">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView.Caption"
                    android:layout_marginRight="@dimen/margin_vvs"
                    android:text="Untuk bantuan silakan klik" />

                <TextView
                    android:id="@+id/help"
                    style="@style/TextView.Caption.Green"
                    android:text="disini" />
            </LinearLayout>

            <Button
                android:id="@+id/button_cancel"
                style="@style/Button.Submit.White.Stroke"
                android:text="@string/flight_label_cancel_ticket" />

            <Button
                android:id="@+id/button_reschedule"
                style="@style/Button.Submit.White.Stroke"
                android:text="@string/flight_label_reschedule_ticket" />

            <Button
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/button_reorder"
                android:text="@string/flight_label_reorder"
                style="@style/Button.Submit.Orange"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>