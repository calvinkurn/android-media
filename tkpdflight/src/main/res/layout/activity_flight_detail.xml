<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_submit"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@drawable/appbar_always_elevated"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleTextAppearance="@style/TextAppearance.Tokopedia.Title.Collapsed.Black"
                app:contentScrim="@color/white"
                app:expandedTitleMarginEnd="12dp"
                app:expandedTitleMarginStart="12dp"
                app:expandedTitleTextAppearance="@style/TextAppearance.Tokopedia.Title.Expanded.Black"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                <com.tokopedia.flight.common.view.DepartureArrivalHeaderView
                    android:id="@+id/dep_arr_header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|snap|enterAlways"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:subtitleTextAppearance="@style/ToolbarSubtitleText"
                    app:titleTextAppearance="@style/ToolbarText" />

            </android.support.design.widget.CollapsingToolbarLayout>


            <include layout="@layout/partial_base_tab_white_indicator" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_submit"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.tokopedia.abstraction.base.view.widget.TouchViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>


    </android.support.design.widget.CoordinatorLayout>

    <Button
        android:id="@+id/button_submit"
        style="@style/Button.Submit.Orange"
        android:layout_alignParentBottom="true"
        android:text="@string/flight_label_choose_button" />
</RelativeLayout>
