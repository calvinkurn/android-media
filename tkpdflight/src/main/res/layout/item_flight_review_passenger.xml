<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_med">


    <TextView
        android:id="@+id/passenger_number"
        style="@style/TextView.Body1.Bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        tools:text="1. " />

    <TextView
        android:id="@+id/passenger_name"
        style="@style/TextView.Body1.Bold"
        android:layout_marginRight="@dimen/margin_vvs"
        android:layout_toRightOf="@id/passenger_number"
        tools:text="Nyonya Hetty Koes Endang" />

    <TextView
        android:id="@+id/passenger_category"
        style="@style/TextView.Caption.BlackSecondary"
        android:layout_toRightOf="@id/passenger_name"
        android:layout_alignBottom="@+id/passenger_name"
        tools:text="(Dewasa)" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/margin_small"
        android:id="@+id/recycler_view_passenger_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/passenger_name"
        android:layout_below="@+id/passenger_name" />
</RelativeLayout>