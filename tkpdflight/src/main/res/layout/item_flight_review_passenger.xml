<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_ms"
    android:paddingBottom="@dimen/padding_ms">

    <TextView
        android:id="@+id/passenger_number"
        style="@style/TextView.Small.Bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        tools:text="1. " />

    <TextView
        android:id="@+id/passenger_name"
        style="@style/TextView.Small.Bold"
        android:layout_alignBottom="@+id/passenger_number"
        android:layout_marginEnd="@dimen/margin_vvs"
        android:layout_marginRight="@dimen/margin_vvs"
        android:layout_toEndOf="@id/passenger_number"
        android:layout_toRightOf="@id/passenger_number"
        tools:text="Nyonya Hetty Koes Endang" />

    <TextView
        android:id="@+id/passenger_category"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_alignBaseline="@+id/passenger_name"
        android:layout_toEndOf="@id/passenger_name"
        android:layout_toRightOf="@id/passenger_name"
        tools:text="(Dewasa)" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_passenger_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/passenger_name"
        android:layout_alignStart="@id/passenger_name"
        android:layout_below="@+id/passenger_name"
        android:layout_marginTop="@dimen/margin_small"/>
</RelativeLayout>