<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_med">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3sp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/filter_order_orange" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_title"
                style="@style/TextView.Body1.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_sm"
                android:gravity="center"
                tools:text="Transaksi Berhasil" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                android:padding="@dimen/padding_small">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_order_date"
                    style="@style/TextView.Caption"
                    tools:text="9 Jan 2017" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_order_id"
                    style="@style/TextView.Body1"
                    android:layout_below="@+id/tv_order_date"
                    tools:text="Order ID: 323088926194" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_overflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selectable_background_tokopedia"
                    android:src="@drawable/ic_toolbar_overflow_level_two_black" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_vs"
                android:background="@drawable/bg_line_separator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_small">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_airline_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingStart="@dimen/padding_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_departure_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_title"
                            tools:text="Jakarta" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_arrival_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/font_title"
                            tools:text="London" />
                    </LinearLayout>

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/TextView.Caption.BlackSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_med"
                        android:text="Jadwal Penerbangan" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_departure_time"
                        style="@style/TextView.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6 Oktober 2017, 07:10 WIB" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_vs"
                android:background="@drawable/bg_line_separator" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_rebooking"
                style="@style/TextView.Subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_background_tokopedia"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_small"
                android:text="Pesan Ulang"
                android:textColor="@color/orange" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>