<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:padding="@dimen/padding_vs"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.6">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_toLeftOf="@+id/container_image_arrow"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/departure_airport_code"
            style="@style/TextView.Title"
            android:gravity="center"
            android:text="CGK" />

        <TextView
            android:id="@+id/departure_airport_name"
            style="@style/TextView.Caption.BlackSecondary"
            android:gravity="center"
            android:text="Jakarta" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/image_width_xxxs"
            android:layout_height="@dimen/image_width_xxxs"
            android:src="@drawable/circle_green_stroke" />

        <View
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_dash_stroke_flight" />

        <ImageView
            android:layout_width="@dimen/image_width_xxs"
            android:layout_height="@dimen/image_width_xxs"
            android:src="@drawable/ic_plane_flight" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_med"
        android:layout_toRightOf="@+id/container_image_arrow"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/arrival_airport_code"
            style="@style/TextView.Title"
            android:text="DPS" />

        <TextView
            android:id="@+id/arrival_airport_name"
            style="@style/TextView.Caption.BlackSecondary"
            android:gravity="center"
            android:text="Denpasar" />
    </LinearLayout>
</RelativeLayout>