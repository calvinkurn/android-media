<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="2"
    android:paddingBottom="@dimen/padding_vs"
    android:paddingTop="@dimen/padding_vs">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_info"
            style="@style/TextView.Body1.Bold"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            tools:text="Jarak antar kursi" />

        <TextView
            android:id="@+id/view_separator"
            style="@style/TextView.Body1.Bold"
            android:layout_marginLeft="@dimen/margin_vvs"
            android:layout_marginRight="@dimen/margin_vvs"
            android:layout_toRightOf="@id/title_info"
            android:text=":" />
    </LinearLayout>

    <TextView
        android:id="@+id/desc_info"
        android:layout_weight="1"
        style="@style/TextView.Body1.BlackSecondary"
        android:layout_width="1dp"
        tools:text="34 inci" />
</LinearLayout>