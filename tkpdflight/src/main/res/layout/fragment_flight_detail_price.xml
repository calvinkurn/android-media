<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_med">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                android:id="@+id/label_adult_price"
                style="@style/TextView.Body1"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/adult_price"
                tools:text="Garuda Indonesia Dewasa x1" />

            <TextView
                android:id="@+id/adult_price"
                style="@style/TextView.Body1.BlackSecondary"
                android:layout_alignParentRight="true"
                tools:text="Rp. 500.000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_child_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/label_child_price"
                style="@style/TextView.Body1"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/child_price"
                tools:text="Garuda Indonesia Anak x1" />

            <TextView
                android:id="@+id/child_price"
                style="@style/TextView.Body1.BlackSecondary"
                android:layout_alignParentRight="true"
                tools:text="Rp. 500.000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_infant_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/label_infant_price"
                style="@style/TextView.Body1"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/infant_price"
                tools:text="Garuda Indonesia Bayi x1" />

            <TextView
                android:id="@+id/infant_price"
                style="@style/TextView.Body1.BlackSecondary"
                android:layout_alignParentRight="true"
                tools:text="Rp. 500.000" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@color/grey_200" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                style="@style/TextView.Body1"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/normal_price"
                android:text="@string/flight_label_normal_price" />

            <TextView
                android:id="@+id/normal_price"
                style="@style/TextView.Body1.BlackSecondary"
                android:layout_alignParentRight="true"
                tools:text="Rp. 500.000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                style="@style/TextView.Body1"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/saving_price"
                android:text="@string/flight_label_saving_price" />

            <TextView
                android:id="@+id/saving_price"
                style="@style/TextView.Body1.BlackSecondary"
                android:layout_alignParentRight="true"
                tools:text="Rp. 500.0000" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@color/grey_200" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small">

            <TextView
                style="@style/TextView.Body1.Bold"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/total_price"
                android:text="@string/flight_label_price_total" />

            <TextView
                android:id="@+id/total_price"
                style="@style/TextView.Title.Bold"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                tools:text="Rp. 500.0000" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>