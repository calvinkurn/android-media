<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/counter_flight"
        style="@style/TextView.Title.Bold"
        android:textSize="@dimen/font_subheading"
        android:text="@string/flight_label_detail_order"/>


    <LinearLayout
        android:id="@+id/layout_expendable_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_expendable_flight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/flight_label_detail_order"
            style="@style/style_expandable_flight_detail_order_title" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_expendable_flight"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/medal_size"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_arrow_up" />

    </LinearLayout>

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/recycler_view_flight_detail_journey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>