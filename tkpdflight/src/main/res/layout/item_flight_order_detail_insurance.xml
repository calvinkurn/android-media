<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/TextView.Title.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:letterSpacing="-0.01"
            tools:text="Asuransi Perjalanan" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Title.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_flight_insurance_protection"
            android:drawableRight="@drawable/ic_flight_insurance_protection"
            android:text="@string/flight_detail_order_protection_label" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_tagline"
        style="@style/TextView.Small.BlackSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/CardSuccessStatusStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flight_order_detail_insurance_description" />
</LinearLayout>