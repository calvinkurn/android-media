<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_with_action_main"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_med"
    android:paddingBottom="@dimen/padding_med"
    android:paddingLeft="@dimen/padding_med">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small">

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_content_message"
                style="@style/TextView.Subheading.BlackPrimary.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_subheading"
                tools:text="Jakarta - Surabaya" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_content_info"
                style="@style/TextView.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_vvs"
                android:layout_marginStart="@dimen/margin_vvs"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="(Jum, 03 Nov 2017)" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/subcontent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_layout"
            android:layout_toEndOf="@+id/tv_subcontent_message"
            android:layout_toRightOf="@+id/tv_subcontent_message"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_subcontent_info"
                style="@style/TextView.Caption"
                android:layout_marginLeft="@dimen/margin_vvs"
                android:layout_marginStart="@dimen/margin_vvs"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/font_caption"
                tools:text="| Langsung | 06:00 CGK - 07:30 SUB" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_subcontent_message"
            style="@style/TextView.Body1.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/content_layout"
            android:textSize="@dimen/font_caption"
            tools:text="Air Asia" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/widget_card_with_action_separator" />

    <RelativeLayout
        android:id="@+id/action_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/selectable_background_tokopedia"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/widget_card_with_action_text_color"

            style="@style/TextView.Body1.Bold"
            tools:text="Detail" />
    </RelativeLayout>
</LinearLayout>