<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_med">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/image_checked"
        android:layout_toStartOf="@+id/image_checked"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_passenger_name"
            style="@style/TextView.Small.Bold"
            android:layout_marginRight="@dimen/margin_vs"
            tools:text="Tn. Karaeng Adjie" />

        <TextView
            android:id="@+id/tv_passenger_id"
            style="@style/TextView.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="No ID: 9384719" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_checked"
        android:layout_width="@dimen/image_width_xs"
        android:layout_height="@dimen/image_width_xs"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>