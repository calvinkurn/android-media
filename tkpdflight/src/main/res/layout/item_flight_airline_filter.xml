<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_sm"
    android:paddingLeft="@dimen/margin_vs"
    android:paddingRight="@dimen/margin_vs"
    android:paddingTop="@dimen/margin_sm">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:minWidth="@dimen/dp_72" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextView.Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Air Asia" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vvs"
            tools:text="Mulai dari Rp5.857.900" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_gravity="center_vertical"
        android:theme="@style/checkBoxStyle" />
</LinearLayout>