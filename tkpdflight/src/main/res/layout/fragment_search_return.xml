<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:divider="@drawable/line_divider"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/padding_ms"
        android:paddingBottom="@dimen/padding_ms">

        <ImageView
            android:layout_width="@dimen/image_width_xs"
            android:layout_height="@dimen/image_width_xs"
            android:layout_marginEnd="@dimen/padding_med"
            android:layout_marginRight="@dimen/padding_med"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_flight_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                style="@style/TextView.Caption.BlackSecondary"
                android:text="@string/flight_label_departure_flight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/airline_name"
                    style="@style/TextView.Body1"
                    android:layout_marginRight="@dimen/padding_ms"
                    android:layout_marginEnd="@dimen/padding_ms"
                    tools:text="Garuda"/>

                <TextView
                    android:id="@+id/duration"
                    style="@style/TextView.Caption.BlackSecondary" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.flight.search.view.adapter.FlightSearchRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <com.tokopedia.design.button.BottomActionView
            android:id="@+id/bottom_action_filter_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_med"
            app:bav_icon_1="@drawable/ic_flight_search_filter"
            app:bav_icon_2="@drawable/ic_flight_search_sort"
            app:bav_label_1="@string/flight_search_filter_label"
            app:bav_label_2="@string/flight_search_sort_label"
            app:layout_anchor="@id/recycler_view"
            app:layout_anchorGravity="bottom|center_horizontal"
            app:layout_behavior="com.tokopedia.design.behavior.QuickReturnFooterBehavior" />

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>