<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/padding_small"
    android:background="@color/background_apps"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_ms"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/padding_ms">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/image_width_m"
            android:layout_height="@dimen/image_width_m"
            app:srcCompat="@drawable/ic_flight_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_sm"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_departure_time_label"
                style="@style/TextView.Micro.BlackSecondary"
                android:padding="@dimen/padding_vvvs"
                tools:text="@string/flight_label_departure_flight" />

            <TextView
                android:id="@+id/tv_journey_detail_label"
                style="@style/TextView.Title.Bold"
                android:padding="@dimen/padding_vvvs"
                tools:text="@string/flight_label_departure_flight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_vvvs">

                <TextView
                    android:id="@+id/airline_name"
                    style="@style/TextView.Micro.Bold"
                    android:layout_marginEnd="@dimen/padding_ms"
                    android:layout_marginRight="@dimen/padding_ms"
                    tools:text="Garuda" />

                <TextView
                    android:id="@+id/duration"
                    style="@style/TextView.Micro.BlackSecondary" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        style="@style/TextView.Micro.Bold"
        android:text="@string/flight_label_passenger_data"
        />

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/recycler_view_passenger"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

    </com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView>

</LinearLayout>