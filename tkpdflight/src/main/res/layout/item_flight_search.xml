<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/padding_ms">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_airline"
            style="@style/TextView.Body1"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_small"
            tools:text="Garuda" />

        <ImageView
            android:id="@+id/image_airline"
            android:layout_width="@dimen/image_width_xs"
            android:layout_height="@dimen/image_width_xs"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_airline"
            tools:src="@drawable/ic_garuda" />

        <TextView
            android:id="@+id/airline_refundable_info"
            style="@style/TextView.Caption.Green"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_rect_stroke_flight_green"
            android:paddingBottom="@dimen/padding_ms"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingTop="@dimen/padding_ms"
            android:visibility="gone"
            tools:text="Refundable"
            tools:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/grey_200" />

    <RelativeLayout
        android:id="@+id/container_flight_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/departure_time"
            style="@style/TextView.Body1"
            android:layout_marginBottom="@dimen/margin_sm"
            android:layout_marginRight="@dimen/margin_vs"
            android:layout_toRightOf="@+id/departure_time_circle"
            tools:text="19:25" />

        <ImageView
            android:id="@+id/departure_time_circle"
            android:layout_width="@dimen/image_width_xxxs"
            android:layout_height="@dimen/image_width_xxxs"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_sm"
            android:src="@drawable/selector_flight_detail" />

        <TextView
            android:id="@+id/arrival_time"
            style="@style/TextView.Body1"
            android:layout_alignLeft="@+id/container_flight_time"
            android:layout_below="@+id/container_flight_time"
            android:layout_marginRight="@dimen/margin_vs"
            tools:text="19:25" />

        <ImageView
            android:id="@+id/arrival_time_circle"
            android:layout_width="@dimen/image_width_xxxs"
            android:layout_height="@dimen/image_width_xxxs"
            android:layout_alignBottom="@+id/arrival_time"
            android:layout_alignLeft="@+id/departure_time_circle"
            android:layout_marginRight="@dimen/margin_sm"
            android:src="@drawable/selector_flight_detail" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/arrival_time_circle"
            android:layout_alignLeft="@+id/departure_time_circle"
            android:layout_below="@id/departure_time_circle"
            android:layout_marginLeft="4dp"
            android:background="@color/tkpd_light_grey" />

        <LinearLayout
            android:id="@+id/container_flight_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/departure_time"
            android:layout_below="@+id/departure_time"
            android:layout_marginBottom="@dimen/margin_sm"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/flight_time"
                style="@style/TextView.Caption.BlackDisabled"
                tools:text="8j 20m" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/total_price"
                style="@style/TextView.Subheading.Bold"
                android:layout_marginBottom="@dimen/margin_sm"
                tools:text="Rp 25.000" />

            <TextView
                android:id="@+id/detail_view"
                style="@style/TextView.Body1.Green"
                android:text="Lihat Detail" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>