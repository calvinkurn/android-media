<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_card_with_action_bg" />
            <corners android:radius="0dp" />
            <stroke
                android:width="1dp"
                android:color="@color/widget_card_with_action_bg_dark" />
            <padding
                android:bottom="0dip"
                android:left="0dip"
                android:right="0dip"
                android:top="0dip" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/widget_card_with_action_bg" />
            <solid
                android:color="@android:color/transparent"
                />
        </shape>
    </item>
</layer-list>