<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WidgetSelectPassengerView">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/padding_vvs</item>
    </style>

    <style name="WidgetSelectPassengerViewIcon">
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="WidgetSelectPassengerViewSubtitle">
        <item name="android:textSize">@dimen/font_subheading</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WidgetSelectPassengerViewTitle">
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="FlightCalendarPicker" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/colorPrimary</item>
        <item name="android:weekNumberColor">@color/red_500</item>
        <item name="android:weekDayTextAppearance">@style/FlightCalendarPickerViewWeekDayView</item>
    </style>

    <style name="FlightCalendarPickerViewWeekDayView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font_black_primary_70</item>
    </style>
</resources>