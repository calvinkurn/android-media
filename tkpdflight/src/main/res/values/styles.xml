<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonRound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textSize">@dimen/font_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/padding_med</item>
        <item name="android:paddingStart">@dimen/padding_med</item>
        <item name="android:paddingRight">@dimen/padding_med</item>
        <item name="android:paddingEnd">@dimen/padding_med</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/bg_button_round</item>
    </style>

    <style name="ButtonRound.Success">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_round_success</item>
    </style>

    <style name="WidgetSelectPassengerView">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/padding_vvs</item>
    </style>

    <style name="WidgetSelectPassengerViewIcon">
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="WidgetSelectPassengerViewSubtitle">
        <item name="android:textSize">@dimen/font_subheading</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidgetSelectPassengerViewTitle">
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FlightCalendarPicker" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/colorPrimary</item>
        <item name="android:weekNumberColor">@color/red_500</item>
        <item name="android:weekDayTextAppearance">@style/FlightCalendarPickerViewWeekDayView</item>
    </style>

    <style name="FlightCalendarPickerViewWeekDayView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font_black_primary_70</item>
    </style>

    <style name="CardWarningStyle">
        <item name="android:padding">@dimen/padding_ms</item>
        <item name="android:background">@drawable/bg_card_warning</item>
        <item name="android:textSize">@dimen/font_caption</item>
    </style>
</resources>