<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <com.tokopedia.design.button.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primary Big"
                app:size="big"
                app:type="primary"
                android:layout_margin="8dp"/>

            <com.tokopedia.design.button.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primary Medium"
                app:size="medium"
                app:type="primary"
                android:layout_margin="8dp"/>

            <com.tokopedia.design.button.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primary Small"
                app:size="small"
                app:type="primary"
                android:layout_margin="8dp"/>

            <com.tokopedia.design.button.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary Big"
                app:size="big"
                app:type="secondary"
                android:layout_margin="8dp"/>

            <com.tokopedia.design.button.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary Medium"
                app:size="medium"
                app:type="secondary"
                android:layout_margin="8dp"/>

            <com.tokopedia.design.button.Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary Small"
                app:size="small"
                app:type="secondary"
                android:layout_margin="8dp"/>

        </LinearLayout>

    </ScrollView>

    <com.tokopedia.design.button.FloatingButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shadowTop="true"
        app:buttonType="primary"
        app:buttonTextAllCaps="true"
        app:text="Floating Button"
        app:buttonSizeType="big" />

</LinearLayout>