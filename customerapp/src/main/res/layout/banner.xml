<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="@dimen/margin_vs"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/promo_image_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1">

            <com.tkpd.library.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="@dimen/padding_vs"
                android:layout_gravity="center_vertical"
                app:fillColor="@color/deep_orange_500"
                app:pageColor="@color/grey_500"
                app:radius="4dp"
                app:centered="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/promo_link"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|right"
            android:text="@string/lihat_smua_promo"
            android:drawableRight="@drawable/ic_chevron_right"
            android:textColor="@color/green_400"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
