<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/margin_vs"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/promo_image_height"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:paddingTop="@dimen/padding_vs"
                android:layout_height="match_parent">

                <com.tkpd.library.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/margin_vs"
                    android:padding="@dimen/padding_vs"/>

            </LinearLayout>

            <TextView
                android:id="@+id/promo_link"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:padding="5dp"
                android:layout_marginRight="@dimen/margin_vs"
                android:text="@string/lihat_smua_promo"
                android:textColor="@color/green_400"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>