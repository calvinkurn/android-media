<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@id/image"
        android:layout_width="@dimen/user_ava"
        android:layout_height="@dimen/user_ava"
        android:background="@drawable/chevron_thin_right"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="View More Promo"
        />

</LinearLayout>