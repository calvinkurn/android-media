<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tkpd_main_green"
    android:orientation="vertical"
    tools:context="com.tokopedia.tkpd.redirect.RedirectCreateShopActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_small"
        android:textSize="@dimen/fontm"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:text="@string/introducing"
        />

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_below="@id/textview1"
        app:srcCompat="@drawable/ic_icon_title_seller_app"
        />

    <TextView
        android:id="@+id/button_redirect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_small"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btn_share_transaparent"
        android:textSize="@dimen/fonts"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/medium_green"
        android:gravity="center_horizontal"
        android:text="@string/download_topseller_app"
        />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_redirect"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="40dp"
        android:textSize="@dimen/fontm"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:text="@string/textview_redirect_seller_app"
        />

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/imageview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageview1"
        android:layout_above="@id/textview2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:padding="@dimen/padding_med"
        app:remoteFileName="ic_icon_redirect_seller_app.png"
        />
</RelativeLayout>
