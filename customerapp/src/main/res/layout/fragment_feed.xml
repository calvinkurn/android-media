<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/empty_layout_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone">

            <include
                layout="@layout/empty_history"/>

        </RelativeLayout>
        <include
            layout="@layout/empty_product_feed"
            android:visibility="gone"/>

        <com.tokopedia.core.customwidget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/index_main_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="vertical"/>
        </com.tokopedia.core.customwidget.SwipeToRefresh>

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <com.tkpd.library.ui.floatbutton.FabSpeedDial
            android:id="@+id/fab_speed_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:touchGuardDrawable="@drawable/background_blur"
            app:fabGravity="bottom_end"
            app:fabMenu="@menu/menu_add_product_instoped"
            app:fabBackgroundTint="@color/green_500"
            app:miniFabBackgroundTint="@color/mini_fab_title_background_tint"
            app:miniFabDrawableTint="@android:color/white"
            app:miniFabTitleTextColor="@android:color/white"/>

        <!--<android.support.design.widget.FloatingActionButton-->
            <!--android:id="@+id/fab_speed_dial"-->
            <!--android:src="@drawable/ic_add_black_48dp_00"-->
            <!--app:fabSize="normal"-->
            <!--app:backgroundTint="@color/tkpd_main_green"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="@dimen/activity_horizontal_margin"-->
            <!--android:layout_gravity="bottom|end"-->
            <!--app:layout_anchorGravity="bottom|right|end"/>-->

    </FrameLayout>

</RelativeLayout>