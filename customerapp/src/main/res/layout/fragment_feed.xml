<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <include
            layout="@layout/empty_history"
            android:visibility="gone"/>

    </RelativeLayout>

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/index_main_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="vertical"/>

            <include
                layout="@layout/empty_product_feed"
                android:visibility="gone"/>

        </LinearLayout>

    </com.tokopedia.core.customwidget.SwipeToRefresh>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tkpd.library.ui.floatbutton.FabSpeedDial
            android:id="@+id/fab_speed_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:fabBackgroundTint="@color/green_500"
            app:fabGravity="bottom_end"
            app:fabMenu="@menu/menu_add_product_instoped"
            app:miniFabBackgroundTint="@color/mini_fab_title_background_tint"
            app:miniFabDrawableTint="@android:color/white"
            app:miniFabTitleTextColor="@android:color/white"
            app:touchGuardDrawable="@drawable/background_blur"/>

    </FrameLayout>

</RelativeLayout>