<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/recharge_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/padding_small">

    <ProgressBar
        android:id="@+id/recharge_progressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/radio_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vs"
        android:orientation="vertical"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/spnOperator"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:spinnerMode="dialog"
        android:visibility="gone"
        >
    </Spinner>

    <TextView
        android:id="@+id/telp_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_vvs"
        android:text="@string/prompt_phone"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"/>

    <com.tokopedia.core.customView.RechargeEditText
        android:id="@+id/pulsa_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/nominalTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_vvs"
        android:text="@string/title_nominal"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/spnNominal"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:spinnerMode="dialog"
        android:visibility="gone"
        >
    </Spinner>

    <TextView
        android:id="@+id/errorNominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_vvs"
        android:text="@string/title_empty_stock"
        android:textColor="@color/red_600"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/buy_wrapper_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_small"
        android:visibility="visible"
        android:weightSum="1">

        <CheckBox
            android:id="@+id/buy_with_credit_checkbox"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="0.50"
            android:text="@string/instant_payment"
            android:textColor="@color/checkbox_text"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/fontvs"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="0.50"
            android:background="@drawable/btn_buy"
            android:minHeight="0dp"
            android:text="@string/title_buy"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>