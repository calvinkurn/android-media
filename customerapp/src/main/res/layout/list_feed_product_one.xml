<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_med"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">

        <ImageView
            android:id="@+id/shop_avatar"
            android:layout_width="@dimen/user_ava"
            android:layout_height="@dimen/user_ava"
            android:layout_marginRight="@dimen/margin_small"
            tools:src="@drawable/ic_check_green_24dp"
            android:background="@drawable/cards_ui_2"/>

        <ImageView
            android:id="@+id/gold_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shop_avatar"
            android:layout_toEndOf="@id/shop_avatar"
            android:layout_toRightOf="@id/shop_avatar"
            android:src="@drawable/ic_shop_gold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/gold_merchant"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_toEndOf="@id/gold_merchant"
            android:layout_toRightOf="@id/gold_merchant"
            tools:text="MaroonVape supwpaiwiajjfawioi \nubah 1 produk " />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="@dimen/margin_vs"
            android:layout_toRightOf="@id/shop_avatar"
            android:textSize="@dimen/fontvs"
            tools:text="4 hours ago" />
    </RelativeLayout>

    <com.tokopedia.core.customwidget.SquareImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_add_photo" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:textStyle="bold"
        tools:text="Premium Liquid - Chocolate Kettle Corn 60Ml" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:textColor="@color/orange"
        tools:text="Rp 195.000" />

    <RelativeLayout
        android:id="@+id/share_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_background_tokopedia">

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableLeft="@drawable/abc_ic_menu_share_mtrl_alpha"
            android:drawablePadding="@dimen/padding_vs"
            android:padding="@dimen/padding_small"
            android:layout_centerHorizontal="true"
            android:text="@string/share" />

    </RelativeLayout>
</LinearLayout>