<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/container_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_vvvs"
        android:layout_marginRight="@dimen/margin_vvvs"
        android:layout_marginTop="@dimen/margin_vvvs"
        android:visibility="visible"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/padding_vvs"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@color/white"
                app:tabIndicatorColor="@color/tkpd_main_green"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/tkpd_main_green"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabTextColor="@color/tkpd_dark_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/grey_100" />

            <RelativeLayout
                android:id="@+id/pulsa_place_holders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_small">

                <TextView
                    android:id="@+id/dummy_view_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/keyline_1"
                    android:layout_marginRight="@dimen/keyline_1"
                    android:background="@color/grey_200"
                    android:textSize="@dimen/fontvs" />


                <View
                    android:id="@+id/dummy_view_2"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_below="@id/dummy_view_1"
                    android:layout_marginLeft="@dimen/keyline_1"
                    android:layout_marginRight="@dimen/keyline_1"
                    android:layout_marginTop="@dimen/margin_small_sm"
                    android:background="@color/grey_200" />

            </RelativeLayout>

            <com.tokopedia.core.customView.WrapContentViewPager
                android:id="@+id/view_pager_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            </com.tokopedia.core.customView.WrapContentViewPager>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/grey_100" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <TextView
                    android:id="@+id/see_all_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_small"
                    android:drawablePadding="@dimen/padding_small"
                    android:drawableRight="@drawable/ic_arrow_right"
                    android:text="@string/lihat_semua_product"
                    android:textColor="@color/tkpd_main_green" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>