<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center_horizontal"
    android:background="#dd000000"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <LinearLayout
        android:id="@+id/header_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_vs">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loren Impsum"
            android:textColor="@color/grey"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:padding="@dimen/padding_small"
            android:textColor="@color/grey_100"
            android:text="Loren Impsum Loren Impsum Loren ImpsumLoren Impsum"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/header_layout_main"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-5dp"
        android:layout_marginRight="@dimen/margin_ms"
        android:background="@color/black"
        android:padding="@dimen/padding_vs"
        android:scaleType="fitXY"
        android:src="@drawable/icon_close_white" />
</RelativeLayout>
