<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center_horizontal"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btn_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/margin_sm"
        android:background="@color/green_buy"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="CTA Here"
        android:textColor="@color/white"
        android:textSize="@dimen/font_large" />
        <LinearLayout
            android:id="@+id/header_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_cta"
            android:layout_gravity="top|center_horizontal"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:padding="@dimen/padding_vs">

                <ImageView
                    android:id="@+id/img_cross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/grey"
                    android:src="@drawable/icon_back_white" />

                <TextView
                    android:id="@+id/tv_head_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_detail"
                    android:paddingRight="@dimen/padding_detail"
                    android:text="Tokopedia"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />
            </LinearLayout>


            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_med"
                android:paddingLeft="@dimen/padding_detail"
                android:paddingRight="@dimen/padding_detail"
                android:text="Loren Impsum"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:paddingLeft="@dimen/padding_detail"
                android:paddingRight="@dimen/padding_detail"
                android:text="Loren Impsum Loren Impsum Loren ImpsumLoren Impsum"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_small" />

        </LinearLayout>


</FrameLayout>
