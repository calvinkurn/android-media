<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center_horizontal"
    android:background="#dd000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_vs">

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/padding_vs">

            <ImageView
                android:id="@+id/img_cross"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="@dimen/margin_ms"
                android:padding="@dimen/padding_vs"
                android:scaleType="fitXY"
                android:src="@drawable/icon_close" />

            <TextView
                android:id="@+id/tv_head_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_detail"
                android:paddingRight="@dimen/padding_detail"
                android:text="Title of information"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>


        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_detail"
            android:paddingRight="@dimen/padding_detail"
            android:layout_marginTop="@dimen/margin_sm"
            android:text="Loren Impsum"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_medium" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_detail"
            android:paddingRight="@dimen/padding_detail"
            android:layout_marginTop="@dimen/margin_3"
            android:text="Loren Impsum Loren Impsum Loren ImpsumLoren Impsum"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/btn_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_sm"
            android:background="@color/green_buy"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="CTA Here"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />
    </LinearLayout>


</RelativeLayout>
