<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_ms"
        android:padding="@dimen/padding_16">

        <TextView
            android:id="@+id/home_channel_title"
            style="@style/TextView.Title.Bold"
            android:layout_centerVertical="true"
            tools:text="Sprint Sale"/>
        
        <ImageView
            android:layout_width="@dimen/home_channel_sprint_sale_countdown_width"
            android:layout_height="@dimen/home_channel_sprint_sale_countdown_height"
            android:layout_toRightOf="@id/home_channel_title"
            android:layout_centerVertical="true"
            tools:src="@color/green_80"
            android:layout_marginLeft="@dimen/margin_ms"/>

        <TextView
            style="@style/TextView.Small.Green"
            android:text="@string/see_all"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_16"
        android:paddingBottom="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/channel_image_1"
                android:layout_width="@dimen/home_channel_3_image_size"
                android:layout_height="@dimen/home_channel_3_image_size"
                tools:src="@color/green_80"/>

            <TextView
                android:id="@+id/channel_price_1"
                style="@style/TextView.Small.Orange"
                android:layout_below="@id/channel_image_1"
                android:layout_marginTop="@dimen/margin_sm"
                tools:text="Rp 1.399.500"/>

            <TextView
                android:id="@+id/channel_before_disc_price_1"
                style="@style/TextView.Nano.BlackDisabled"
                android:layout_below="@id/channel_image_1"
                android:layout_marginTop="@dimen/margin_vs"
                tools:text="Rp 2.799.000"/>

            <TextView
                style="@style/TextView.Nano.Red.Bold"
                android:background="@drawable/home_channel_discount_text_background"
                android:paddingTop="@dimen/label_padding_top_bottom"
                android:paddingBottom="@dimen/label_padding_top_bottom"
                android:paddingLeft="@dimen/label_padding_left_right"
                android:paddingRight="@dimen/label_padding_left_right"
                android:layout_alignTop="@id/channel_image_1"
                android:layout_alignRight="@id/channel_image_1"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                tools:text="50% OFF"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/channel_image_2"
                android:layout_width="@dimen/home_channel_3_image_size"
                android:layout_height="@dimen/home_channel_3_image_size"
                tools:src="@color/green_80"/>

            <TextView
                android:id="@+id/channel_price_2"
                style="@style/TextView.Small.Orange"
                android:layout_below="@id/channel_image_2"
                android:layout_marginTop="@dimen/margin_sm"
                tools:text="Rp 1.399.500"/>

            <TextView
                android:id="@+id/channel_before_disc_price_2"
                style="@style/TextView.Nano.BlackDisabled"
                android:layout_below="@id/channel_image_2"
                android:layout_marginTop="@dimen/margin_vs"
                tools:text="Rp 2.799.000"/>

            <TextView
                style="@style/TextView.Nano.Red.Bold"
                android:background="@drawable/home_channel_discount_text_background"
                android:paddingTop="@dimen/label_padding_top_bottom"
                android:paddingBottom="@dimen/label_padding_top_bottom"
                android:paddingLeft="@dimen/label_padding_left_right"
                android:paddingRight="@dimen/label_padding_left_right"
                android:layout_alignTop="@id/channel_image_2"
                android:layout_alignRight="@id/channel_image_2"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                tools:text="50% OFF"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/channel_image_3"
                android:layout_width="@dimen/home_channel_3_image_size"
                android:layout_height="@dimen/home_channel_3_image_size"
                tools:src="@color/green_80"/>

            <TextView
                android:id="@+id/channel_price_3"
                style="@style/TextView.Small.Orange"
                android:layout_below="@id/channel_image_3"
                android:layout_marginTop="@dimen/margin_sm"
                tools:text="Rp 1.399.500"/>

            <TextView
                android:id="@+id/channel_before_disc_price_3"
                style="@style/TextView.Nano.BlackDisabled"
                android:layout_below="@id/channel_image_3"
                android:layout_marginTop="@dimen/margin_vs"
                tools:text="Rp 2.799.000"/>

            <TextView
                style="@style/TextView.Nano.Red.Bold"
                android:background="@drawable/home_channel_discount_text_background"
                android:paddingTop="@dimen/label_padding_top_bottom"
                android:paddingBottom="@dimen/label_padding_top_bottom"
                android:paddingLeft="@dimen/label_padding_left_right"
                android:paddingRight="@dimen/label_padding_left_right"
                android:layout_alignTop="@id/channel_image_3"
                android:layout_alignRight="@id/channel_image_3"
                android:layout_marginTop="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                tools:text="50% OFF"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>