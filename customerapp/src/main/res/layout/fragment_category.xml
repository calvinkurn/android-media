
    <!--android:descendantFocusability="blocksDescendants"-->
    <!--removed by mady to add recharge feature-->
    <LinearLayout
        android:id="@+id/wrapperLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.tokopedia.core.home.customview.TokoCashHeaderView
            android:id="@+id/toko_cash_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/announcement_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_vs"
            android:visibility="gone" />

        <com.tokopedia.tkpd.home.customview.BannerView
            android:id="@+id/banner_container_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_toppicks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

        <com.tokopedia.tkpd.home.customview.DigitalWidgetView
            android:id="@+id/digital_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_brand_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            app:cardCornerRadius="0dip"
            app:cardElevation="0dip"
            tools:visibility="visible"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true">

                <RelativeLayout
                    android:id="@id/rl_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_vs"
                    android:layout_marginStart="@dimen/padding_vs"
                    android:layout_marginTop="@dimen/padding_vs"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false">

                    <TextView
                        android:id="@id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="13dp"
                        android:text="@string/title_home_official_store"
                        android:textColor="@color/grey_750"
                        tools:text="Sample title" />

                    <View
                        android:layout_width="25dp"
                        android:layout_height="3dp"
                        android:layout_below="@id/tv_title"
                        android:background="@color/deep_orange_500" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@id/rv_brands_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_title_layout"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/margin_vvs"
                    android:layout_marginTop="@dimen/margin_small"
                    android:padding="@dimen/padding_vs"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/text_view_all_brands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/rv_brands_list"
                    android:paddingTop="@dimen/padding_vs"
                    android:paddingBottom="@dimen/padding_vs"
                    android:paddingEnd="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center_vertical|end"
                    android:text="@string/see_all"
                    android:textColor="@color/green_400"
                    android:textSize="15sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>