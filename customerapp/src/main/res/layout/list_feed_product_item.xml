<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/black_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:foreground="@color/trans_black_40">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.core.customwidget.SquareImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_marginTop="@dimen/margin_vs"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_product_desc"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Nexus 5X 32 ,awawdawdasdas  pure white dan juga warna rose gold" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/margin_vs"
                android:layout_marginRight="@dimen/margin_vs"
                android:gravity="center_vertical"
                android:textColor="@color/orange_red"
                android:textSize="12sp"
                tools:text="Rp 3.121.500" />
        </RelativeLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/extra_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/fontvl"
        android:visibility="gone"
        tools:text="+2"
        tools:visibility="visible" />

</RelativeLayout>