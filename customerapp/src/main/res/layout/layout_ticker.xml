<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/announcement_ticker_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ticker_container"
    android:padding="2dp"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_vs"
    android:layout_marginLeft="@dimen/margin_vs"
    android:layout_marginRight="@dimen/margin_vs">

    <LinearLayout
        android:layout_marginLeft="3dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ticker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vs"
            android:text=""
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/ticker_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vs"
            android:text="" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:src="@drawable/ic_close_ticker_24dp"/>


</RelativeLayout>