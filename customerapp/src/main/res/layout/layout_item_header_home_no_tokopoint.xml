<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_tokocash"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/card_view_margin"
    android:paddingEnd="@dimen/keyline_1_minus_8dp"
    android:paddingRight="@dimen/keyline_1_minus_8dp"
    android:paddingTop="@dimen/card_view_margin"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/iv_logo_tokopoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/keyline_1_minus_8dp"
        app:srcCompat="@drawable/ic_tokocash_icon"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_tokocash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="TokoCash"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_balance_tokocash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black_70"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Rp 100.000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_btn_action_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_med"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4sp"
                tools:text="Aktivasi"
                android:textColor="@color/tkpd_main_green"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/scanner_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_med"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4sp"
                android:text="Scan"
                android:textColor="@color/tkpd_main_green"
                android:textSize="@dimen/fontvs"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>