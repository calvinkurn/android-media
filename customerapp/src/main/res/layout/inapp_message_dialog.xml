<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center_horizontal"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/ll_message_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_inapp_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_4"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginRight="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_4"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/margin_layout_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/fonts" />

            <TextView
                android:id="@+id/tv_inapp_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_4"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_marginRight="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_4"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/margin_vs"
                android:paddingTop="@dimen/margin_vs"
                android:textSize="@dimen/font_small" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_inapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_background"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_action_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_vs"
                android:text="kjdwkqjq"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/btn_action_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/padding_small"
                android:paddingTop="@dimen/padding_vs"
                android:text="kjdwkqjq"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_inapp_cross"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_ms"
        android:background="@color/black"
        android:scaleType="fitXY"
        android:src="@drawable/icon_close_white" />
</RelativeLayout>