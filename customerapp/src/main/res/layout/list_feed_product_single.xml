<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_med"
    android:background="@drawable/cards_ui_2"
    android:orientation="vertical">

    <include layout="@layout/feed_product_header"/>

    <com.tokopedia.core.customwidget.SquareImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_add_photo" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_vs"
        android:textStyle="bold"
        tools:text="Premium Liquid - Chocolate Kettle Corn 60Ml" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:textColor="@color/orange"
        tools:text="Rp 195.000" />

    <include layout="@layout/feed_share_button"/>
</LinearLayout>