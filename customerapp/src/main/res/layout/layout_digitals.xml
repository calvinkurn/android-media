<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:padding="@dimen/icon_official_store_margin_l"
            android:textColor="@color/black_70"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Bayar ini itu di Tokopedia" />

        <TextView
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="end"
            android:lineSpacingExtra="3sp"
            android:padding="@dimen/icon_official_store_margin_l"
            android:text="@string/lihat_semua"
            android:textColor="@color/medium_green"
            android:textSize="13sp"
            android:textStyle="normal" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/tkpd_main_green"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/tkpd_main_green"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/tkpd_dark_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/grey_100" />

    <RelativeLayout
        android:id="@+id/pulsa_place_holders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <TextView
            android:id="@+id/dummy_view_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:background="@color/grey_200"
            android:textSize="@dimen/fontvs" />


        <View
            android:id="@+id/dummy_view_2"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/dummy_view_1"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginTop="@dimen/margin_small_sm"
            android:background="@color/grey_200" />

    </RelativeLayout>

    <com.tokopedia.core.customView.WrapContentViewPager
        android:id="@+id/view_pager_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    </com.tokopedia.core.customView.WrapContentViewPager>

</LinearLayout>
