<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/layout_shake_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_54"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/white_button_rounded"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/cancel_btn2"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_cross_circle" />

            <ImageView
                android:layout_width="159dp"
                android:layout_height="159dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/shake_shake_error_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Oops!"
                android:textColor="#b3000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shake_shake_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:gravity="center"
                android:text="Kejutannya masih dibungkus.
Yuk, shake lagi handphone-mu."
                android:textColor="#b3000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_shake_close"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/bg_btn_green"
                android:gravity="center"
                android:text="Shake Lagi"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/disable_shake_shake_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_54"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_30"
            android:background="@drawable/white_button_rounded"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <ImageView
                android:id="@+id/cancel_btn3"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_cross_circle" />

            <ImageView
                android:layout_width="159dp"
                android:layout_height="159dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_shake_stop_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Oops!"
                android:textColor="#b3000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:gravity="center"
                android:text="Sepertinya sistem Shake di hp-mu
sedang lelah. Istirahat dulu yuk!"
                android:textColor="#b3000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_turn_off"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/bg_btn_green"
                android:gravity="center"
                android:text="Matikan Shake"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/shake_shake_message_button"
        android:layout_width="288dp"
        android:layout_height="38dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_rect_rounded_white_shadow"
        android:gravity="center"
        android:padding="@dimen/dp_5">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linear_layout_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="@dimen/dp_32"
            android:minWidth="@dimen/dp_80"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30">

            <ImageView
                android:id="@+id/shake_shake_icon"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                app:srcCompat="@drawable/ic_shake_shake" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/shake_shake_terus"
                android:textColor="@color/medium_green"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/cancel_btn"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_25"
                app:srcCompat="@drawable/ic_cross" />

            <TextView
                android:id="@+id/shake_shake_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:background="@layout/layout_circle"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/medium_green"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone">

            </TextView>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/cancel_button"
        android:layout_width="288dp"
        android:layout_height="38dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_rect_rounded_white_shadow"
        android:gravity="center"
        android:visibility="gone">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_32"
            android:minWidth="@dimen/dp_80"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                app:srcCompat="@drawable/ic_shake_shake" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/cancel_shake_shake"
                android:textColor="@color/medium_green"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_25"
                app:srcCompat="@drawable/ic_cross" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

</FrameLayout>