<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_product_feed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_vs"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_empty_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/no_favorite_shop"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/textview_empty_feed_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/sub_no_favorite_shop"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/text_size_xsmall" />

    <TextView
        android:id="@+id/find_favorite_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vs"
        android:background="@drawable/teal_button"
        android:gravity="center"
        android:padding="@dimen/padding_vs"
        android:text="@string/but_find_favorite"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xsmall"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/official_store_link_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_with_violet_left_side"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/icon_official_store"
            android:layout_width="@dimen/icon_official_store_size"
            android:layout_height="@dimen/icon_official_store_size"
            android:layout_marginLeft="@dimen/icon_official_store_margin_l"
            android:layout_marginTop="@dimen/icon_official_store_margin"
            android:layout_marginBottom="@dimen/icon_official_store_margin"
            android:background="@drawable/ic_official_store"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_official_store"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/banner_official_store_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/banner_official_store_title_text"
                android:textSize="11sp"
                android:textColor="@color/black_54"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/banner_official_store_subtitle_text"
                android:textSize="11sp"
                android:textColor="@color/medium_green"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>