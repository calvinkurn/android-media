<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/user_ava"
        android:layout_width="@dimen/user_ava"
        android:layout_height="@dimen/user_ava"
        android:background="@drawable/com_facebook_profile_picture_blank_portrait"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/promote"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_toped_step_01"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_ava"
        android:layout_toEndOf="@id/user_ava"
        android:layout_toLeftOf="@+id/promote"
        android:layout_toStartOf="@+id/promote"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small">

        <ImageView
            android:id="@id/gold_merchant"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_gold"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop shop"
            android:layout_toRightOf="@id/gold_merchant"
            android:layout_toEndOf="@id/gold_merchant" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jual obat - obatan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/gold_merchant"/>


    </RelativeLayout>

</RelativeLayout>