<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Tokopedia3.CustomerApp.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/div_system_splash_bg_main</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="WaitingPaymentOrderTheme" parent="@style/Theme.White">
        <item name="android:windowAnimationStyle">@style/WaitingPaymentOrderActivityTransition
        </item>
    </style>

    <style name="WaitingPaymentOrderActivityTransition">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in_medium</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out_medium</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in_medium</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out_medium</item>
    </style>
</resources>