<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.tokopedia.tkpd">

    <uses-sdk tools:overrideLibrary="com.tokopedia.core"
        />


    <application
        tools:replace="android:name"
        android:name="com.tokopedia.tkpd.ConsumerMainApplication"
        android:allowBackup="true"
                 android:icon="@drawable/qc_launcher"
                 android:label="@string/app_name"
                 android:supportsRtl="true"
                 android:theme="@style/Theme.Tokopedia3.Launcher">
        <activity
            android:name="com.tokopedia.core.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".home.ParentIndexHome"
            android:exported="true"
            android:label="Tokopedia"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>

                <!-- LOCALYTICS TEST MESSAGE KEY -->
                <data android:scheme="ampe5ce78bb486192da7790186-01e0f208-0058-11e5-9b02-00739d24cb30"/>

                <!-- DEBUG KEY -->
                <!-- <data android:scheme="ampa4c853a5c07b6acfeb61343-037f3b9e-6591-11e5-bdf6-0013a62af900" /> -->
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
