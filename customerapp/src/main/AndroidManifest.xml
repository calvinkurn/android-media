<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.tokopedia.tkpd">

    <uses-sdk tools:overrideLibrary="com.tokopedia.core"
        />


    <application
        tools:replace="android:name"
        android:name="com.tokopedia.tkpd.ConsumerMainApplication"
        android:allowBackup="true"
                 android:icon="@drawable/qc_launcher"
                 android:label="@string/app_name"
                 android:supportsRtl="true"
                 android:theme="@style/Theme.Tokopedia3.Launcher"
        >
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="d02324f74e70ffcd2dc00ab722d32baecf1884b4" />
        <activity
            android:name="com.tokopedia.core.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <!-- LOCALYTICS TEST MESSAGE KEY -->
                <data android:scheme="@string/key_localytics_testmessage" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.tkpd.deeplink.activity.DeepLinkActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_deep_link"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern=".*"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern=".*"
                    android:scheme="tkpd" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern=".*"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPattern=".*"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPrefix="/reset.pl"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPrefix="/reset.pl"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPrefix="/activation.pl"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPrefix="/activation.pl"
                    android:scheme="https" />
                <data
                    android:host="tokopedia.onelink.me"
                    android:scheme="https" />
                <data
                    android:host="apps.tokopedia.com"
                    android:scheme="http" />
                <data
                    android:host="apps.tokopedia.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="LOCALYTICS_APP_KEY"
            android:value="@string/key_localytics" />

        <meta-data
            android:name="GTM_RESOURCE"
            android:resource="@raw/gtm_consumer" />

        <meta-data
            android:name="GTM_ID"
            android:value="@string/key_gtm" />

        <meta-data
            android:name="APPSFLYER_KEY"
            android:value="@string/key_appsflyer" />

        <activity
            android:name=".home.ParentIndexHome"
            android:exported="true"
            android:label="Tokopedia"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.tokopedia.tkpd.home.SimpleHomeActivity"
            android:label="@string/title_activity_simple_home"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3" />
        <activity
            android:name=".home.recharge.activity.RechargePaymentWebView"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <provider
            android:authorities="com.facebook.app.FacebookContentProviderOQcSB25ec2f92263c41b5a3d10152ace7888e"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true"/>
    </application>

</manifest>
