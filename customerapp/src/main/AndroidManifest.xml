<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokopedia.tkpd">

    <uses-sdk tools:overrideLibrary="com.tokopedia.core" />

    <application
        android:name=".ConsumerMainApplication"
        android:allowBackup="true"
        android:icon="@drawable/qc_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tokopedia3"
        tools:replace="android:name">
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="d02324f74e70ffcd2dc00ab722d32baecf1884b4" />
        <meta-data
            android:name="APP_ID"
            android:value="@string/key_moengage" />
        <meta-data
            android:name="SENDER_ID"
            android:value="@string/key_sender_id" />
        <meta-data
            android:name="SKIP_GCM_REGISTRATION"
            android:value="true"/>
        <meta-data android:name="AF_PRE_INSTALL_PATH" android:value="/data/local/tmp/pre_install.appsflyer" />

        <activity
            android:name="com.tokopedia.tkpd.ConsumerSplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>

                <!-- LOCALYTICS TEST MESSAGE KEY -->
                <data android:scheme="@string/key_localytics_testmessage" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".deeplink.activity.DeepLinkActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_deep_link"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern=".*"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPattern=".*"
                    android:scheme="tkpd" />
                <data
                    android:host="tokopedia.com"
                    android:pathPattern=".*"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPattern=".*"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPrefix="/reset.pl"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPrefix="/reset.pl"
                    android:scheme="https" />
                <data
                    android:host="www.tokopedia.com"
                    android:pathPrefix="/activation.pl"
                    android:scheme="https" />
                <data
                    android:host="m.tokopedia.com"
                    android:pathPrefix="/activation.pl"
                    android:scheme="https" />
                <data
                    android:host="tokopedia.onelink.me"
                    android:scheme="https" />
                <data
                    android:host="accounts.tokopedia.com"
                    android:scheme="https" />
                <data
                    android:host="apps.tokopedia.com"
                    android:scheme="http" />
                <data
                    android:host="apps.tokopedia.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="LOCALYTICS_APP_KEY"
            android:value="@string/key_localytics" />
        <meta-data
            android:name="GTM_RESOURCE"
            android:resource="@raw/gtm_consumer" />
        <meta-data
            android:name="GTM_ID"
            android:value="@string/key_gtm" />
        <meta-data
            android:name="GA_ID"
            android:value="@string/key_ga" />
        <meta-data
            android:name="APPSFLYER_KEY"
            android:value="@string/key_appsflyer" />
        <meta-data
            android:name="com.truecaller.android.sdk.PartnerKey"
            android:value="@string/key_truecaller_main_app"/>

        <activity
            android:name=".home.ParentIndexHome"
            android:exported="true"
            android:label="Tokopedia"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".home.SimpleHomeActivity"
            android:label="@string/title_activity_simple_home"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3" />
        <activity
            android:name=".home.recharge.activity.RechargePaymentWebView"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name=".goldmerchant.GoldMerchantRedirectActivity"
            android:label="@string/label_gold_merchant"
            android:screenOrientation="portrait" />

        <activity
            android:name=".tkpdfeed.feedplus.view.activity.FeedPlusDetailActivity"
            android:label="@string/title_detail_feed"
            android:screenOrientation="portrait" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProviderOQcSB25ec2f92263c41b5a3d10152ace7888e"
            android:exported="true" />

        <activity
            android:name=".deeplink.DeeplinkHandlerActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tokopedia" />
            </intent-filter>
        </activity>

        <activity
            android:name=".truecaller.TruecallerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tokopedia.otp.phoneverification.activity.RidePhoneNumberVerificationActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".home.feed.data.source.cloud.AddFavoriteShopService"
            android:exported="false" />

        <activity
            android:name=".redirect.RedirectCreateShopActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3" />

        <activity
            android:name=".applink.AppLinkWebsiteActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_deep_link"
            android:screenOrientation="portrait" />

        <activity android:name=".datepicker.DatePickerTokoCashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3" />

        <activity
            android:name="com.tokopedia.tkpd.home.ReactNativeOfficialStoresActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
