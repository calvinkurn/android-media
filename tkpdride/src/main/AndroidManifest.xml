<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.ride">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".bookingride.view.activity.RideHomeActivity"
            android:theme="@style/AppTheme.Ride.NoActionBar" />
        <activity
            android:name=".bookingride.view.activity.GooglePlacePickerActivity"
            android:theme="@style/AppTheme.Ride.NoActionBar" />
        <activity
            android:name=".ontrip.view.OnTripActivity"
            android:theme="@style/AppTheme.Ride.NoActionBar" />
        <activity
            android:name=".completetrip.CompleteTripActivity"
            android:theme="@style/AppTheme.Ride.NoActionBar" />

        <service
            android:name=".ontrip.service.GetCurrentRideRequestService"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>
    </application>

</manifest>