<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RideToolbarText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="RideToolbarSubtitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="avgRatingBarSmall" parent="@android:style/Widget.Holo.Light.RatingBar.Small">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/yellow_600</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="avgRatingBarMedium" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/yellow_600</item>
    </style>

    <style name="AppTheme.Ride.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <!--<item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/yellow_600</item>-->
        <item name="android:indeterminateDrawable">@drawable/material_rating_bar</item>
        <item name="android:progressDrawable">@drawable/material_rating_bar</item>
    </style>


    <style name="searchTextPrimaryHiglight">
        <item name="android:textColor">@color/label_text_color</item>
    </style>

    <style name="ChatViewDefault">

        <item name="inputBackgroundColor">@color/white</item>
        <item name="inputUseEditorAction">false</item>
        <item name="backgroundColor">@color/white</item>

        <item name="inputTextSize">@dimen/default_input_text_size</item>
        <item name="inputTextColor">@color/black</item>
        <item name="inputHintColor">@color/main_color_gray</item>

        <!--<item name="sendBtnElevation">4dp</item>-->
        <item name="sendBtnIcon">@drawable/ic_send_white_24dp</item>
        <item name="sendBtnIconTint">@color/white</item>
        <item name="sendBtnBackgroundTint">?attr/colorAccent</item>
    </style>
</resources>