<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/five_dp"
    android:layout_marginRight="@dimen/five_dp"
    android:paddingTop="@dimen/five_dp"
    tools:context="com.tokopedia.ride.bookingride.view.fragment.UberProductFragment">

    <ViewFlipper
        android:id="@+id/layout_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoStart="false"
        android:clickable="true"
        android:measureAllChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/crux_cabs_home_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <include
                    android:id="@+id/layout_cab_booking_header"
                    layout="@layout/layout_cabs_booking_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ride_product_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_cab_booking_header"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/layout_progress_and_error_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/layout_cab_booking_header">

                    <include
                        android:id="@+id/empty_product_list"
                        layout="@layout/cabs_home_empty_list_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/product_list_progress"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/white_circle_with_shadow"
                        android:padding="16dp"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <include
            android:id="@+id/cab_confirm_booking_bar"
            layout="@layout/layout_cabs_confirm_booking"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ViewFlipper>
</RelativeLayout>