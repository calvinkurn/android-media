<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/five_dp"
    android:layout_marginRight="@dimen/five_dp"
    android:paddingTop="@dimen/five_dp"
    tools:context="com.tokopedia.ride.bookingride.view.fragment.UberProductFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/cabs_home_ad_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!--<include-->
            <!--android:id="@+id/layout_cab_booking_header"-->
            <!--layout="@layout/layout_cabs_booking_header"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true" />-->

            <RelativeLayout
                android:id="@+id/layout_cab_booking_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_all_cabs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingBottom="@dimen/twelve_dp"
                        android:paddingLeft="@dimen/fifteen_dp"
                        android:paddingStart="@dimen/fifteen_dp"
                        android:paddingTop="@dimen/twelve_dp"
                        android:text="@string/uber_product_header_all_cabs"
                        android:textColor="@color/shop_sub_cat"
                        android:textSize="@dimen/twelve_dp" />

                    <TextView
                        android:id="@+id/tv_sort_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight=".4"
                        android:drawablePadding="@dimen/five_dp"
                        android:paddingBottom="@dimen/twelve_dp"
                        android:paddingTop="@dimen/twelve_dp"
                        android:text="@string/uber_product_header_time"
                        android:textColor="@color/shop_sub_cat"
                        android:textSize="@dimen/twelve_dp" />

                    <TextView
                        android:id="@+id/tv_sort_fare"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="@dimen/five_dp"
                        android:gravity="right"
                        android:paddingBottom="@dimen/twelve_dp"
                        android:paddingRight="@dimen/fifteen_dp"
                        android:paddingTop="@dimen/twelve_dp"
                        android:text="@string/uber_product_header_fare"
                        android:textColor="@color/shop_sub_cat"
                        android:textSize="@dimen/twelve_dp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:layout_below="@id/ll_header"
                    android:background="@color/pdp_grey_separator" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ride_product_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_cab_booking_header"
                android:minHeight="150dp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/layout_error_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/layout_cab_booking_header"
                android:visibility="gone">

                <include
                    android:id="@+id/empty_product_list"
                    layout="@layout/cabs_home_empty_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_progress_view"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/layout_cab_booking_header"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/product_list_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/white_circle_with_shadow"
                    android:padding="16dp"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>