<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/material_card"
    android:clickable="true"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:visibility="visible">


    <RelativeLayout
        android:id="@+id/layout_progress_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/layout_cab_booking_header"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/product_list_progress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/white_circle_with_shadow"
            android:padding="16dp"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/confirm_page_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/confirm_booking_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/cabAppIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/shape_bg_cab_img"
                android:padding="6dp"
                app:srcCompat="@drawable/cabs_uber_ic"
                android:visibility="visible" />

            <TextView
                android:id="@+id/topHeaderConfirmBooking"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/cabAppIcon"
                android:paddingLeft="17dp"
                android:text="UberX - Pickup in 3 minutes"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvSurgeRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/cab_surge"
                android:drawablePadding="5dp"
                android:text="1x"
                android:textColor="#25a8ed"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="#e3e3e3"
            android:visibility="visible" />

        <include layout="@layout/cabs_confirm_buttons_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="#e3e3e3"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/forgot_password_bg"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/layout_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_payment_method"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_tokocash_icon" />

                    <TextView
                        android:id="@+id/tv_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_ms"
                        android:text="@string/toko_cash_info"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_tokocash_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_ms"
                        android:textColor="@color/grey_700"
                        android:textSize="@dimen/fontvs"
                        android:visibility="visible"
                        tools:text="(Rp 5.555.555)" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_change_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingBottom="@dimen/new_margin_small"
                    android:paddingRight="@dimen/margin_small_sm"
                    android:paddingTop="@dimen/new_margin_small"
                    android:text="@string/change_payment_method"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="6dp"
            android:background="#e3e3e3" />

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Error"
            android:textColor="@color/red_600"
            android:visibility="gone" />

        <Button
            android:id="@+id/cab_confirmation"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_filled_theme_bttn_orange"
            android:gravity="center"
            android:text="@string/btn_request"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>