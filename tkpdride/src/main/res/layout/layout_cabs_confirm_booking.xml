<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/material_card"
    android:clickable="true"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/cabAppIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/crux_cabs_uber_ic"
            android:visibility="visible" />

        <TextView
            android:id="@+id/topHeaderConfirmBooking"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/cabAppIcon"
            android:paddingLeft="17dp"
            android:text="Uber Go - Pickup in 2 mins"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvSurgeRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/cab_surge"
            android:drawablePadding="5dp"
            android:text="1.2x"
            android:textColor="#25a8ed"
            android:textSize="13sp"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:background="#e3e3e3"
        android:visibility="visible" />

    <include
        layout="@layout/crux_cabs_confirm_buttons_layout"
        android:visibility="gone" />

    <include layout="@layout/crux_cabs_confirm_buttons_pool_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e3e3e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/forgot_password_bg"
        android:gravity="left"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cab_cash_payment"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/crux_cabs_please_pay_in_cash"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="6dp"
        android:background="#e3e3e3" />

    <TextView
        android:id="@+id/cab_confirmation"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_filled_theme_bttn"
        android:gravity="center"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/toko_cash_topup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tokocash_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Insufficient Balance. Your Balance is "
            android:textColor="@color/red_600" />

        <TextView
            android:id="@+id/tv_topup_tokocash"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/red_600"
            android:gravity="center"
            android:text="Topup Toko Cash"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
