<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/material_card"
    android:clickable="true"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/cabAppIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/shape_bg_cab_img"
            android:padding="6dp"
            android:src="@drawable/crux_cabs_uber_ic"
            android:visibility="visible" />

        <TextView
            android:id="@+id/topHeaderConfirmBooking"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/cabAppIcon"
            android:paddingLeft="17dp"
            android:text="UberX - Pickup in 3 minutes"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvSurgeRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/cab_surge"
            android:drawablePadding="5dp"
            android:text="1x"
            android:textColor="#25a8ed"
            android:textSize="13sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:background="#e3e3e3"
        android:visibility="visible" />

    <include layout="@layout/crux_cabs_confirm_buttons_pool_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:background="#e3e3e3"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/forgot_password_bg"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_tokocash_icon"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/crux_cabs_please_pay_in_cash"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/apply_promo_card_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Apply Promo"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="6dp"
        android:background="#e3e3e3" />

    <ProgressBar
        android:id="@+id/confirm_progress_bar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:padding="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Error"
        android:textColor="@color/red_600"
        android:visibility="gone" />

    <TextView
        android:id="@+id/cab_confirmation"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_filled_theme_bttn"
        android:gravity="center"
        android:text="@string/btn_request"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/toko_cash_topup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_tokocash_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Insufficient Balance. Your Balance is "
            android:textColor="@color/red_600" />

        <TextView
            android:id="@+id/tv_topup_tokocash"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/red_600"
            android:gravity="center"
            android:text="@string/confirm_booking_topup_toko_cash"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toko_cash_activation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_activation_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/confirm_booking_tokocash_activation_required"
            android:textColor="@color/red_600" />

        <TextView
            android:id="@+id/tv_activation_button"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/red_600"
            android:gravity="center"
            android:text="@string/confirm_booking_toko_cash_activation"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
