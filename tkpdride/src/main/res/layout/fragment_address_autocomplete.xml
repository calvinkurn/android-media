<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.ride.bookingride.view.fragment.PlaceAutocompleteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/gray_background">

        <RelativeLayout
            android:id="@+id/cabs_autocomplete_et_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:background="@drawable/search_bg"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/cabs_autocomplete_back_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/header_blue_back_icon"/>

                <FrameLayout
                    android:id="@+id/layout_loader_cross"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:id="@+id/cabs_autocomplete_cross"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/blue_close_icon"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/materialLoader"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:visibility="visible"/>
                </FrameLayout>

                <EditText
                    android:id="@+id/cabs_autocomplete_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/layout_loader_cross"
                    android:layout_toRightOf="@id/cabs_autocomplete_back_icon"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingBottom="2dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cabs_autocomplete_et_container">

            <RelativeLayout
                android:id="@+id/crux_cabs_auto_detect_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/auto_detect_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/crux_cabs_auto_detect_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/auto_detect_icon"
                    android:singleLine="true"
                    android:text="Auto-detect current location"
                    android:textColor="#616161"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/track_arrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cabs_autocomplete_home_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/crux_cabs_auto_detect_container"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_cab_home_location_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:padding="3dp"
                    android:src="@drawable/cab_home_location_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_cab_home_location_icon"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/cab_home_location_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/cabs_autocomplete_home_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Home adress"
                        android:textColor="@color/grey_for_home_search_view"
                        android:textSize="12sp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cabs_autocomplete_work_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cabs_autocomplete_home_box"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_cab_work_location_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cab_work_location_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_cab_work_location_icon"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/cab_work_location_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/cabs_autocomplete_work_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Work adress"
                        android:textColor="@color/grey_for_home_search_view"
                        android:textSize="12sp"/>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cabs_autocomplete_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/cabs_autocomplete_work_box"
                android:layout_marginTop="5dp"
                android:background="@color/gray_background"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cabs_autocomplete_recycler_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/powered_by_google_light"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>