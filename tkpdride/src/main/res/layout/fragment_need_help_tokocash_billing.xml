<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.tokopedia.ride.history.view.RideHistoryNeedHelpFragment">


    <EditText
        android:id="@+id/et_problem_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/material_card"
        android:gravity="left"
        android:hint="@string/billing_problem_hint"
        android:minHeight="180dp"
        android:padding="12dp"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/cab_confirmation"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_filled_green_bttn"
        android:gravity="center"
        android:text="@string/btn_submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />


</RelativeLayout>
