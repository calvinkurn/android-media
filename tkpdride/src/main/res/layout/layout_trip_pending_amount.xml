<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/keyline_1"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1"
        android:paddingStart="@dimen/keyline_1">

        <ImageView
            android:id="@+id/pending_sep1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/five_dp"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:layout_marginTop="@dimen/twelve_dp"
            android:layerType="software"
            android:src="@drawable/shape_dash_line" />

        <TextView
            android:id="@+id/label_total_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pending_sep1"
            android:gravity="center"
            android:text="@string/complete_trip_pending_fare"
            android:textColor="@color/red_600"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/tv_total_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/pending_sep1"
            android:text="-"
            android:textColor="@color/red_600"
            android:textSize="@dimen/fontvs"
            tools:text="Rp. 15.000" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pending_sep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_dp"
        android:layout_marginBottom="@dimen/keyline_1"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        android:layout_marginTop="@dimen/twelve_dp"
        android:layerType="software"
        android:src="@drawable/shape_dash_line" />

    <LinearLayout
        android:id="@+id/layout_topup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirty_dp"
        android:layout_marginRight="@dimen/thirty_dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/eight_dp">

        <TextView
            android:id="@+id/tv_choose_tokocash_amount_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/complete_trip_choose_tokocash_amount"
            android:textSize="@dimen/font_small" />


        <RelativeLayout
            android:id="@+id/layout_tokocash_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/eight_dp"
            android:paddingTop="@dimen/eight_dp">

            <TextView
                android:id="@+id/tv_tokocash_selected_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_arrow"
                android:layout_toStartOf="@+id/iv_arrow"
                android:padding="@dimen/padding_vs"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                tools:text="Loading..." />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_tokocash_selected_product"
                android:background="@color/grey" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="@dimen/width_iv_arrow_pending_fare_dropdown"
                android:layout_height="@dimen/height_iv_arrow_pending_fare_dropdown"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/icon_angle_arrow_down"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dp"
            android:text="@string/complete_trip_tip_top_up_more_tokocash_than_your_pending_fare_to_ease_your_booking_experience"
            android:textAlignment="center"
            android:textSize="@dimen/fontvs" />

        <TextView
            android:id="@+id/btn_topup_tokocash"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_filled_green_bttn"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/complete_trip_top_up_tokocash"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</LinearLayout>