<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/keyline_1"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1"
        android:paddingStart="@dimen/keyline_1">

        <ImageView
            android:id="@+id/pending_sep1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/five_dp"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:layout_marginTop="@dimen/twelve_dp"
            android:layerType="software"
            android:src="@drawable/shape_dash_line" />

        <TextView
            android:id="@+id/label_total_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pending_sep1"
            android:gravity="center"
            android:text="@string/complete_trip_pending_fare"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_total_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/pending_sep1"
            android:text="-"
            android:textColor="@color/red_600"
            android:textSize="@dimen/font_small"
            tools:text="Rp. 15.000" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pending_sep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_dp"
        android:layout_marginBottom="@dimen/keyline_1"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        android:layout_marginTop="@dimen/twelve_dp"
        android:layerType="software"
        android:src="@drawable/shape_dash_line" />

    <LinearLayout
        android:id="@+id/layout_topup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirty_dp"
        android:layout_marginRight="@dimen/thirty_dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/eight_dp">

        <TextView
            android:id="@+id/btn_pay_pending_fare"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_filled_green_bttn"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/complete_pay_pending_fare"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</LinearLayout>