<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:padding="@dimen/padding_med"
    tools:context="com.tokopedia.ride.ontrip.view.fragment.InterruptDialogFragment">

    <TextView
        android:id="@+id/tv_label_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/padding_large"
        android:paddingTop="@dimen/padding_large"
        android:text="By clicking Booking Ride,\n I agree with terms and conditions."
        android:textAlignment="center"
        android:textColor="@color/tkpd_dark_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_med"
            android:layout_weight="1"
            android:background="@drawable/button_rounded"
            android:text="@string/interrupt_tos_cancel"
            android:textColor="@color/button_form_grey" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_grey"
            android:text="@string/interrupt_tos_accept"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
