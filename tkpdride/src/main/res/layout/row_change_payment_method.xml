<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?android:selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/payment_method_image"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_tokocash_icon" />


    <TextView
        android:id="@+id/payment_method_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="48dp"
        android:textColor="@color/black"
        tools:text="Credit Card" />

    <TextView
        android:id="@+id/tokocash_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_toRightOf="@id/payment_method_name"
        android:textColor="@color/grey_700"
        android:textSize="@dimen/fontvvs"
        android:visibility="gone"
        tools:text="(Rp 543.240)" />

    <ImageView
        android:id="@+id/img_tick"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:tint="@color/colorPrimary"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_tick" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_300" />

</RelativeLayout>