<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tokopedia.ride.bookingride.view.fragment.ConfirmBookingRideFragment">

    <LinearLayout
        android:id="@+id/layout_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/layout_apply_promocode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp" />

        <LinearLayout
            android:id="@+id/promo_result_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:background="@drawable/material_card"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/margin_med"
                android:tint="@color/colorGreen"
                app:srcCompat="@drawable/ic_thumb_up_black_24dp" />

            <TextView
                android:id="@+id/tv_promo_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small_sm"
                android:layout_marginLeft="@dimen/margin_small_sm"
                android:layout_marginTop="@dimen/margin_small_sm"
                android:layout_weight="1.0"
                android:text="Loading..."
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_promo_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/margin_med"
                android:text="@string/edit"
                android:textStyle="bold"
                android:textColor="@color/blue_link"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_promo_desc_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/margin_med"
                app:srcCompat="@drawable/cabs_cross_white"
                android:tint="@color/grey_900"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>


    <ProgressBar
        android:id="@+id/indeterminate_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:indeterminate="true"
        android:indeterminateBehavior="cycle" />

    <include layout="@layout/layout_cabs_confirm_booking" />

</LinearLayout>
