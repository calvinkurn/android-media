<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:visibility="visible">


    <TextView
        android:gravity="left"
        android:id="@+id/tv_all_cabs"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifteen_dp"
        android:paddingTop="@dimen/fifteen_dp"
        android:text="All Cabs"
        android:textColor="@color/shop_sub_cat"
        android:textSize="@dimen/twelve_dp" />

    <TextView
        android:drawablePadding="@dimen/five_dp"
        android:id="@+id/tv_sort_time"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:paddingBottom="@dimen/fifteen_dp"
        android:paddingTop="@dimen/fifteen_dp"
        android:text="Time"
        android:textColor="@color/shop_sub_cat"
        android:textSize="@dimen/twelve_dp" />

    <TextView
        android:drawablePadding="@dimen/five_dp"
        android:gravity="right"
        android:id="@+id/tv_sort_fare"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="@dimen/fifteen_dp"
        android:text="Fare"
        android:textColor="@color/shop_sub_cat"
        android:textSize="@dimen/twelve_dp" />

    <View
        android:background="@color/pdp_grey_separator"
        android:layout_below="@id/tv_all_cabs"
        android:layout_height="1.0dp"
        android:layout_width="match_parent" />
</RelativeLayout>
