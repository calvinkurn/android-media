<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/on_trip_complete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_total_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="12dp"
            android:text="---"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/layout_driver_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_fare"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_driver_pict"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/default_user_pic_light" />

                <TextView
                    android:id="@+id/tv_driver_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:background="@drawable/shape_bg_rounded_white_rectangle"
                    android:drawableLeft="@drawable/star_yellow"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/star_yellow"
                    android:padding="4dp"
                    android:text="4.6"
                    android:textColor="@color/black_400"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="Jhon Doe"
                    android:textColor="@color/black_400"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_vehicle_pict"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/crux_cabs_uber_ic" />

                <TextView
                    android:id="@+id/tv_vehicle_license_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-4dp"
                    android:background="@drawable/shape_bg_rounded_white_rectangle"
                    android:padding="4dp"
                    android:text="B 123 XYZ"
                    android:textColor="@color/black_400"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_vehicle_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="Honda Brio"
                    android:textColor="@color/black_400"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/label_total_charged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_driver_details"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/ic_tokocash_icon"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Toko Cash Charged"
            android:textColor="@color/black_full"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total_charged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/layout_driver_details"
            android:paddingTop="40dp"
            android:text="----"
            android:textColor="@color/black_full"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_400" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/tv_sign_up_uber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGNUP WITH UBER TO GET ONE RIDE FREE"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_tnc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:paddingLeft="4dp"
                    android:text="@string/uber_signup_tnc"
                    android:textColor="@color/blue_link"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/material_card"
        android:paddingBottom="@dimen/fifteen_dp"
        android:paddingLeft="@dimen/fifteen_dp"
        android:paddingRight="@dimen/fifteen_dp"
        android:paddingTop="@dimen/fifteen_dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/materialLoader"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/cabs_ontrip_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/materialLoader"
            android:text="Loading..." />
    </LinearLayout>


</RelativeLayout>