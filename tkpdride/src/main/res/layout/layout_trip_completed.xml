<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/on_trip_complete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_loader"
        android:background="@color/white">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingEnd="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/tv_total_fare_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/complete_trip_your_fare"
                        android:textAllCaps="true"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_total_fare_label"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="12dp"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <LinearLayout
                        android:id="@+id/layout_driver_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_total_fare"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="20dp">

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_driver_pict"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/default_user_pic_light" />

                            <TextView
                                android:id="@+id/tv_driver_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-4dp"
                                android:background="@drawable/shape_bg_rounded_white_rectangle"
                                android:drawableLeft="@drawable/star_yellow"
                                android:drawablePadding="4dp"
                                android:drawableStart="@drawable/star_yellow"
                                android:padding="4dp"
                                android:text="4.6"
                                android:textColor="@color/black_400"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_driver_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="12dp"
                                android:textColor="@color/black_400"
                                android:textSize="14sp"
                                tools:text="John Doe" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_vehicle_pict"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:src="@drawable/cabs_uber_ic" />

                            <TextView
                                android:id="@+id/tv_vehicle_license_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="-4dp"
                                android:background="@drawable/shape_bg_rounded_white_rectangle"
                                android:padding="4dp"
                                android:text="B 123 XYZ"
                                android:textColor="@color/black_400"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_vehicle_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingTop="12dp"
                                android:text="Toyota Prius"
                                android:textColor="@color/black_400"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/source_destination_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_driver_details"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="20dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/crux_cabs_src_dest_line"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20.5dp"
                            android:src="@drawable/cabs_src_dest_line" />

                        <RelativeLayout
                            android:id="@+id/crux_cabs_source_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/crux_cabs_source_icon"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/cabs_source_ic" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_source"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/crux_cabs_source_icon"
                                android:ellipsize="marquee"
                                android:paddingBottom="12dp"
                                android:paddingLeft="18dp"
                                android:paddingRight="12dp"
                                android:paddingTop="12dp"
                                android:singleLine="true"
                                android:text="Loading..."
                                android:textColor="@color/black"
                                android:textColorHint="@color/pdp_rating_color_new"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_destination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/crux_cabs_source_container">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="47dp"
                                android:background="@color/grey" />

                            <ImageView
                                android:id="@+id/crux_cabs_destination_icon"
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/cabs_dest_ic" />

                            <TextView
                                android:id="@+id/tv_destination"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/crux_cabs_destination_icon"
                                android:ellipsize="marquee"
                                android:paddingBottom="12dp"
                                android:paddingLeft="18dp"
                                android:paddingTop="12dp"
                                android:singleLine="true"
                                android:text="Loading..."
                                android:textColor="@color/black"
                                android:textColorHint="@color/pdp_rating_color_new"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_label_total_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/source_destination_container"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="@string/total_fare"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_fare_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/source_destination_container"
                        android:paddingTop="20dp"
                        android:text="-"
                        android:textColor="@color/black_full"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_label_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_label_total_fare"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/label_discount"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_label_total_fare"
                        android:paddingTop="8dp"
                        android:text="-"
                        android:textColor="@color/black_full"
                        android:textSize="16sp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/label_total_charged"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_label_discount"
                        android:layout_marginTop="12dp"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="@string/complete_trip_amount_charged"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_charged"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_label_discount"
                        android:layout_marginTop="12dp"
                        android:text="-"
                        android:textColor="@color/black_full"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_label_cashback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/label_total_charged"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/label_cashback"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_cashback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/label_total_charged"
                        android:paddingTop="8dp"
                        android:text="-"
                        android:textColor="@color/black_full"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:layout_marginTop="20dp"
                    android:visibility="visible">

                    <include
                        layout="@layout/layout_rate_trip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/pending_fare_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dp"
                    android:visibility="gone">

                    <include
                        layout="@layout/layout_trip_pending_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rating_result_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/rate_result_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/complete_trip_you_rate"
                        android:textAllCaps="true"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp" />


                    <RatingBar
                        android:id="@+id/rb_rate_star_result"
                        style="@style/avgRatingBarMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rate_result_label"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="0"
                        android:scaleX=".75"
                        android:scaleY=".75"
                        android:stepSize="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_400" />

            <LinearLayout
                android:id="@+id/uber_signup_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_sign_up_uber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="SIGNUP WITH UBER TO GET ONE RIDE FREE"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_signup_tnc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:paddingLeft="4dp"
                    android:text="@string/uber_signup_tnc"
                    android:textColor="@color/blue_link"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA000000"
            android:clickable="true" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/material_card"
            android:paddingBottom="@dimen/fifteen_dp"
            android:paddingLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/fifteen_dp"
            android:paddingTop="@dimen/fifteen_dp">

            <ProgressBar
                android:id="@+id/materialLoader"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="12dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/cabs_ontrip_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/materialLoader"
                android:text="Loading..." />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>

