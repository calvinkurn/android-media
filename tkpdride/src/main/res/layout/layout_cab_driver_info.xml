<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cab_on_trip_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/driver_eta_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="1 min away"
        android:textColor="@color/tkpd_main_green"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/cab_driver_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:id="@+id/cab_driver_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cab_driver_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/default_user_pic_light" />

            <TextView
                android:id="@+id/tv_driver_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-4dp"
                android:background="@drawable/shape_bg_rounded_white_rectangle"
                android:drawableLeft="@drawable/star_yellow"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/star_yellow"
                android:padding="4dp"
                android:text="4.6"
                android:textColor="@color/black_400"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cab_driver_image_layout"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="X Driver"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_cab_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_driver_name"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/cab_driver_image_layout"
            android:paddingLeft="15dp"
            android:text="Maruti Suzuki Swift Dezire"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_cab_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cab_detail"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/cab_driver_image_layout"
            android:paddingLeft="15dp"
            android:text="DL 8888"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:src="@drawable/ic_call_black_24dp" />

            <ImageView
                android:id="@+id/icon_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:clickable="true"
                android:src="@drawable/ic_message" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e3e3e3" />

    <LinearLayout
        android:id="@+id/layout_on_trip_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/call_driver_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_call_driver"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="3dp"
                android:src="@drawable/contact"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_call_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_call_driver"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/contact_driver"
                android:textColor="@color/black"
                android:textSize="11sp" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <LinearLayout
            android:id="@+id/help_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/img_help"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_share"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_help"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:text="@string/driver_detail_share_eta"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#e3e3e3" />

        <LinearLayout
            android:id="@+id/layout_cancel_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/img_cancel_ride"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:padding="3dp"
                android:src="@drawable/cancel"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_cancel_ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_cancel_ride"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:text="Cancel Ride"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pool_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/forgot_password_bg"
        android:drawableLeft="@drawable/cabs_pool_looking"
        android:drawablePadding="10dp"
        android:gravity="right"
        android:padding="12dp"
        android:text="Looking for another rider, Paying Rs 73.61"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:visibility="gone" />
</LinearLayout>
