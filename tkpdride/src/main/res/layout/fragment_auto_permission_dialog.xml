<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    tools:context="com.tokopedia.ride.ontrip.view.fragment.InterruptDialogFragment">

    <TextView
        android:id="@+id/tv_label_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:text="Allow Auto Debit"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/tv_label_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_large"
        android:text="Please proceed to allow your to card to auto debit permission."
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_15">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/button_rounded"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/interrupt_tos_cancel"
            android:textColor="@color/button_form_grey" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_filled_theme_bttn_orange"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/interrupt_aut_debit_proceed"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
