<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/confirm_remove_promo"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dialog_title"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_filled_green_bttn"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:text="@string/dialog_yes"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/dialog_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@id/dialog_yes"
        android:background="@drawable/button_rounded_grey"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        android:text="@string/dialog_no"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15sp" />


</RelativeLayout>