<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/keyline_1">

        <TextView
            android:id="@+id/label_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_card_number"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/txt_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_card_number"
            android:text=".... .... .... 8978"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            tools:text=".... .... .... 8978" />


        <View
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_card_number"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/grey_300" />

        <TextView
            android:id="@+id/label_card_expiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seperator"
            android:layout_marginTop="@dimen/padding_med"
            android:text="@string/label_expiration_date"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/txt_card_expiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_card_expiration"
            android:layout_marginTop="12dp"
            android:text="10/2020"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large"
            tools:text="10/2020" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_card_expiration"
            android:layout_marginRight="16dp"
            android:background="@color/grey_300" />

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_sm"
            android:background="@drawable/rounded_filled_theme_bttn_orange"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/btn_edit_cc_delete"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_allow_auto_debit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@id/btn_delete"
            android:layout_marginLeft="@dimen/margin_sm"
            android:layout_marginRight="@dimen/margin_sm"
            android:background="@drawable/button_rounded"
            android:gravity="center"
            android:text="@string/allow_auto_debit"
            android:textColor="@color/black"
            android:visibility="gone" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_confirm_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/margin_med">

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="36dp"
                    android:text="@string/title_confirm_delete_card"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dialog_title"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_dialog_cancel"
                        android:layout_width="120dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_bg_white_btn"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="@string/cancel_dialog_delete_card"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/btn_dialog_delete"
                        android:layout_width="120dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="@dimen/margin_med"
                        android:background="@drawable/rounded_filled_theme_bttn_orange"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="@string/btn_edit_cc_delete"
                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
