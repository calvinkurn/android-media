<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_200"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/trip_completed_rate_your_ride"
            android:textAllCaps="true"
            android:textColor="@color/grey_700"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/rb_rate_star"
            style="@style/avgRatingBarMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:numStars="5"
            android:rating="0"
            android:scaleX=".65"
            android:scaleY=".65"
            android:stepSize="1" />

        <ImageView
            android:id="@+id/tip_seperator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/five_dp"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:layerType="software"
            app:srcCompat="@drawable/shape_dash_line"
            android:visibility="gone" />

        <GridLayout
            android:id="@+id/grid_layout_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="@integer/tip_grid_col"
            android:orientation="horizontal"
            android:padding="@dimen/fifteen_dp"
            android:rowCount="@integer/tip_grid_row"
            android:textAlignment="center"
            android:useDefaultMargins="true"
            android:visibility="gone">

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/et_rate_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/complete_trip_write_comments"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/rate_confirmation"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_filled_theme_disable_bttn"
            android:gravity="center"
            android:text="@string/complete_trip_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>