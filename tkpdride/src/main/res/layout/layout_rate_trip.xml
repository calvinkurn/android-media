<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_200"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/trip_completed_rate_your_ride"
            android:textAllCaps="true" />

        <RatingBar
            android:id="@+id/rb_rate_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:numStars="5"
            android:rating="0"
            android:scaleX=".75"
            android:scaleY=".75"
            android:stepSize="1"
            android:theme="@style/RatingBar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_rate_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/complete_trip_write_comments"
            android:textSize="14sp" />

        <Button
            android:id="@+id/rate_confirmation"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/rounded_filled_theme_disable_bttn"
            android:gravity="center"
            android:text="@string/complete_trip_submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>