<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.tokopedia.ride.history.view.RideHistoryNeedHelpFragment">


    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:textColor="@color/tkpd_dark_green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_hello"
        android:paddingLeft="6dp"
        android:text=""
        android:textColor="@color/tkpd_light_green"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/message_about_asking_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hello"
        android:layout_marginTop="12dp"
        android:text="@string/message_about_asking_help"
        android:textColor="@color/grey_700"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/label_trip_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_about_asking_help"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:text="@string/label_trip_id"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/value_trip_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_trip_id"
        android:layout_marginTop="4dp"
        android:text="Loading..."
        android:textColor="@color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_copy"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/value_trip_id"
        android:layout_marginBottom="-8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/value_trip_id"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:text="7d7277ba-2911-47b0-83fa-e6729b7756dd"
        android:tint="@color/colorGreen"
        app:srcCompat="@drawable/ic_content_copy_black_24dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/btn_ride_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_trip_id"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="40dp"
        android:background="?attr/selectableItemBackground"
        app:cardElevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/ride"
            android:textColor="@color/black" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/btn_billing_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ride_help"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"
        app:cardElevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/tokocash_billing"
            android:textColor="@color/black" />
    </android.support.v7.widget.CardView>


</RelativeLayout>
