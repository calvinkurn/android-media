    <!--android:layout_height="24dp"-->
    <!--android:layout_marginRight="20dp"-->
    <!--android:src="@drawable/cabs_cross_white"-->
    <!--android:tint="@color/grey_900"-->
    <!--android:visibility="visible" />-->
</LinearLayout>
