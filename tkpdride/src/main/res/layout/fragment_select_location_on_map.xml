<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.ride.bookingride.view.fragment.RideHomeMapFragment">

    <RelativeLayout
        android:id="@+id/cabs_autocomplete_et_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/search_bg"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/cabs_autocomplete_back_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/header_blue_back_icon" />

            <FrameLayout
                android:id="@+id/layout_loader_cross"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/iv_cross"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/blue_close_icon"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/pb_loader"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_cabs_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/cabs_autocomplete_back_icon"
                android:layout_toRightOf="@+id/cabs_autocomplete_back_icon"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingBottom="2dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cabs_autocomplete_et_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp">

            <com.tokopedia.ride.bookingride.view.TouchableWrapperLayout
                android:id="@+id/tw_map_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.tokopedia.ride.bookingride.view.TouchableWrapperLayout>

            <ImageView
                android:id="@+id/iv_android_center_marker"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/marker_red"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/rounded_filled_theme_bttn"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/open_map_done"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </RelativeLayout>

</RelativeLayout>
