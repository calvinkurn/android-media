<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/iv_google_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_detail"
            android:layout_marginBottom="8dp">

            <com.google.android.gms.maps.MapView
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mapview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:clickable="false"
                map:cameraZoom="15"
                map:liteMode="true"
                map:mapType="normal"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ride_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_google_map"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="150dp"
            android:text="21/03/2017 09:00 AM"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_driver_car_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ride_start_time"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:text="Honda Amaze (XX 1234)"
            android:textColor="@color/grey_600"/>


        <TextView
            android:id="@+id/tv_ride_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_google_map"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="12dp"
            android:text="IDR 9.500"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_ride_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_ride_start_time"
            android:layout_marginRight="12dp"
            android:text="Completed"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>