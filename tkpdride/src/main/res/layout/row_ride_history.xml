<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:id="@+id/iv_google_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_detail"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/mapview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_map_height"
                android:background="@color/grey_map_background"
                android:clickable="false"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_ride_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_google_map"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="150dp"
            android:text="21/03/2017 09:00 AM"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_driver_car_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ride_start_time"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="150dp"
            android:text="Honda Amaze (XX 1234)"
            android:textColor="@color/grey_600"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_ride_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_google_map"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="12dp"
            android:text="IDR 9.500"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_ride_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_ride_start_time"
            android:layout_marginRight="12dp"
            android:text="Completed"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>