<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/crux_cabs_home_ad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg_blue_cabs_ad"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        app:srcCompat="@drawable/cabs_promo_ad_ic" />

    <TextView
        android:id="@+id/crux_cabs_ad_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1.0"
        android:ellipsize="marquee"
        android:maxLines="2"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Book UberX now to get 20% off"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/crux_cabs_ad_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        app:srcCompat="@drawable/cabs_cross_white" />
</LinearLayout>
