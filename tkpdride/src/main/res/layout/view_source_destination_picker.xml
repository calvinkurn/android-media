<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/material_card">

        <ImageView
            android:id="@+id/crux_cabs_src_dest_line"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.5dp"
            android:src="@drawable/cabs_src_dest_line" />

        <RelativeLayout
            android:id="@+id/crux_cabs_source_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/crux_cabs_source_icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/cabs_source_ic" />

            <TextView
                android:id="@+id/crux_cabs_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/crux_cabs_source_icon"
                android:background="?attr/selectableItemBackground"
                android:ellipsize="marquee"
                android:hint="@string/ride_home_source_picker"
                android:paddingBottom="12dp"
                android:paddingLeft="18dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/pdp_rating_color_new"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/crux_cabs_source_container">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="47dp"
                android:background="@color/grey" />

            <ImageView
                android:id="@+id/crux_cabs_destination_icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/cabs_dest_ic" />

            <TextView
                android:id="@+id/crux_cabs_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/crux_cabs_destination_icon"
                android:background="?attr/selectableItemBackground"
                android:ellipsize="marquee"
                android:hint="Select Destination"
                android:paddingBottom="12dp"
                android:paddingLeft="18dp"
                android:paddingRight="40dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/pdp_rating_color_new"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/destination_clear"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/blue_close_icon"
                android:tint="@color/grey_500"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>


</FrameLayout>
