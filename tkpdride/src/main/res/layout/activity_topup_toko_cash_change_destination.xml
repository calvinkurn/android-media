<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tkpd_main_green"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppBarTheme"
        app:contentInsetLeft="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitleTextAppearance="@style/RideToolbarSubtitleText"
        app:titleTextAppearance="@style/RideToolbarText" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/insufficient_tokocash_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:paddingLeft="@dimen/new_margin_med"
            android:paddingRight="@dimen/new_margin_med"
            android:text="@string/change_destination_insufficient_balance_title"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/new_margin_med"
            android:paddingRight="@dimen/new_margin_med"
            android:paddingTop="@dimen/margin_small_sm"
            android:text="@string/change_destination_insufficient_balance_message"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/font_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@color/grey_200" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginRight="@dimen/thirty_dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/eight_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="@string/add_tokocash"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_choose_tokocash_amount_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/complete_trip_choose_tokocash_amount"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/font_small" />


            <RelativeLayout
                android:id="@+id/layout_tokocash_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="@dimen/eight_dp"
                android:paddingTop="@dimen/eight_dp">

                <TextView
                    android:id="@+id/tv_tokocash_selected_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_arrow"
                    android:layout_toStartOf="@+id/iv_arrow"
                    android:padding="@dimen/padding_vs"
                    android:text="250000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tv_tokocash_selected_product"
                    android:background="@color/grey" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="@dimen/width_iv_arrow_pending_fare_dropdown"
                    android:layout_height="@dimen/height_iv_arrow_pending_fare_dropdown"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    app:srcCompat="@drawable/icon_angle_arrow_down"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight_dp"
                android:text="@string/complete_trip_tip_top_up_more_tokocash_than_your_pending_fare_to_ease_your_booking_experience"
                android:textAlignment="center"
                android:textColor="@color/grey_600"
                android:textSize="@dimen/fontvs" />

            <TextView
                android:id="@+id/btn_topup_tokocash"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="@dimen/margin_med"
                android:background="@drawable/rounded_filled_green_bttn"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/complete_trip_top_up_tokocash"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>