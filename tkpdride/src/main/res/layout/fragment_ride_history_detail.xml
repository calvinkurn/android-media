<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tokopedia.ride.history.view.RideHistoryDetailFragment">

    <RelativeLayout
        android:id="@+id/ride_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/top_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="40dp"
                android:visibility="visible">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_google_map"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="10dp"
                    android:background="#F2F2E9"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:id="@+id/top_header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_google_map">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ride_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="150dp"
                        android:text="21/03/2017 09:00 AM"
                        android:textColor="@color/black" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_driver_car_display_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_ride_start_time"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="150dp"
                        android:text="Honda Amaze (XX 1234)"
                        android:textColor="@color/grey_600"
                        android:textSize="12sp" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ride_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginRight="16dp"
                        android:text="IDR 9.500"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_ride_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_ride_start_time"
                        android:layout_marginRight="16dp"
                        android:text="Completed"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/source_destination_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_header_container"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp">

                    <ImageView
                        android:id="@+id/crux_cabs_src_dest_line"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20.5dp"
                        android:src="@drawable/cabs_src_dest_line" />

                    <RelativeLayout
                        android:id="@+id/crux_cabs_source_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/crux_cabs_source_icon"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/cabs_source_ic" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_source"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/crux_cabs_source_icon"
                            android:ellipsize="marquee"
                            android:paddingBottom="12dp"
                            android:paddingLeft="18dp"
                            android:paddingRight="12dp"
                            android:paddingTop="12dp"
                            android:singleLine="true"
                            android:text="Loading..."
                            android:textColor="@color/black"
                            android:textColorHint="@color/pdp_rating_color_new"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/crux_cabs_source_container">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="47dp"
                            android:background="@color/grey" />

                        <ImageView
                            android:id="@+id/crux_cabs_destination_icon"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/cabs_dest_ic" />

                        <TextView
                            android:id="@+id/tv_destination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/crux_cabs_destination_icon"
                            android:ellipsize="marquee"
                            android:paddingBottom="12dp"
                            android:paddingLeft="18dp"
                            android:paddingTop="12dp"
                            android:singleLine="true"
                            android:text="Loading..."
                            android:textColor="@color/black"
                            android:textColorHint="@color/pdp_rating_color_new"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/v_line_above_driver"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/source_destination_container"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"

                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/grey_300" />

                <RelativeLayout
                    android:id="@+id/rl_driver_detail_cpntainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_line_above_driver"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_driver_pict"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/default_user_pic_light" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toEndOf="@+id/iv_driver_pict"
                        android:layout_toRightOf="@+id/iv_driver_pict"
                        android:text="Your trip with John"
                        android:textColor="@color/black" />

                    <RatingBar
                        android:id="@+id/rb_rating_result"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="0"
                        android:scaleX=".75"
                        android:scaleY=".75"
                        android:stepSize="1"
                        android:theme="@style/RatingBar"
                        android:visibility="gone"
                        tools:rating="3" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_payment_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_driver_detail_cpntainer"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp">

                    <View
                        android:id="@+id/v_line_below_driver"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/grey_300" />

                    <TextView
                        android:id="@+id/tv_label_total_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/v_line_below_driver"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="@string/total_fare"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_fare_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/v_line_below_driver"
                        android:text="-"
                        android:textColor="@color/black_full"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_label_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_label_total_fare"
                        android:layout_marginTop="9dp"
                        android:gravity="center"
                        android:text="@string/label_discount"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_label_total_fare"
                        android:paddingTop="8dp"
                        android:text="-"
                        android:textColor="@color/black_full"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_label_cashback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_label_discount"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/label_cashback"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_cashback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_label_discount"
                        android:paddingTop="8dp"
                        android:text="-"
                        android:textColor="@color/black_full"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/fare_sep"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_label_cashback"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/grey_300" />

                    <TextView
                        android:id="@+id/label_total_charged"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fare_sep"
                        android:drawableLeft="@drawable/ic_tokocash_icon"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="@string/complete_trip_tokocash_charged"
                        android:textColor="@color/grey_700"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_charged"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/fare_sep"
                        android:text="-"
                        android:textColor="@color/black_full"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_payment_details"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone">

                    <include
                        layout="@layout/layout_rate_trip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layout_need_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/need_help"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="@string/link_click_here"
                android:textColor="@color/colorGreen" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/layout_need_help"
            android:background="@color/grey_300" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>
