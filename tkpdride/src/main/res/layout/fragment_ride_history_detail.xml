<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tokopedia.ride.history.view.RideHistoryDetailFragment">

    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_google_map"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="10dp"
            android:background="#F2F2E9"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/top_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_google_map">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_ride_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="150dp"
                android:text="21/03/2017 09:00 AM"
                android:textColor="@color/black" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_driver_car_display_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ride_start_time"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:text="Honda Amaze (XX 1234)"
                android:textColor="@color/grey_600" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_ride_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="16dp"
                android:text="IDR 9.500"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_ride_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_ride_start_time"
                android:layout_marginRight="16dp"
                android:text="Completed"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/source_destination_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_header_container"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <ImageView
                android:id="@+id/crux_cabs_src_dest_line"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.5dp"
                android:src="@drawable/crux_cabs_src_dest_line" />

            <RelativeLayout
                android:id="@+id/crux_cabs_source_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/crux_cabs_source_icon"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/crux_cabs_source_ic" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/crux_cabs_source_icon"
                    android:ellipsize="marquee"
                    android:paddingBottom="12dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:singleLine="true"
                    android:text="Loading..."
                    android:textColor="@color/black"
                    android:textColorHint="@color/pdp_rating_color_new"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/crux_cabs_source_container">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="47dp"
                    android:background="@color/grey" />

                <ImageView
                    android:id="@+id/crux_cabs_destination_icon"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/crux_cabs_dest_ic" />

                <TextView
                    android:id="@+id/tv_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/crux_cabs_destination_icon"
                    android:ellipsize="marquee"
                    android:paddingBottom="12dp"
                    android:paddingLeft="18dp"
                    android:paddingTop="12dp"
                    android:singleLine="true"
                    android:text="Loading..."
                    android:textColor="@color/black"
                    android:textColorHint="@color/pdp_rating_color_new"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/source_destination_container"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_driver_pict"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/default_user_pic_light" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_driver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/iv_driver_pict"
                android:layout_toRightOf="@+id/iv_driver_pict"
                android:text="Your trip with John"
                android:textColor="@color/black" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
