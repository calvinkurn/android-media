<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rate_fare_coupon_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:gravity="center"
        android:id="@+id/rate_card_layout"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="17dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgRateCard"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/cab_rate_card"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvRateCard"
            android:layout_below="@id/imgRateCard"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Rate Card"
            android:textColor="@color/black"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:background="#e3e3e3"
        android:layout_height="match_parent"
        android:layout_width="0.5dp"
        android:visibility="visible" />

    <RelativeLayout
        android:gravity="center"
        android:id="@+id/fare_estimation_layout"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="17dp">

        <ImageView
            android:id="@+id/imgFareEstimationIcon"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/cab_fare_estimation_icon"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvFareEstimate"
            android:layout_below="@id/imgFareEstimationIcon"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Fare Estimate"
            android:textColor="@color/discount_strip_bg"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:background="#e3e3e3"
        android:layout_height="match_parent"
        android:layout_width="0.5dp" />

    <RelativeLayout
        android:gravity="center"
        android:id="@+id/apply_coupon_layout"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="17dp">

        <ImageView
            android:id="@+id/imgApplyCouponIcon"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/cab_dollar_symbol"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvApplyCoupon"
            android:layout_below="@id/imgApplyCouponIcon"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Apply Coupon"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:background="@drawable/round_circle_green"
            android:gravity="top"
            android:id="@+id/txt_cab_offers_count"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@id/imgApplyCouponIcon"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>
