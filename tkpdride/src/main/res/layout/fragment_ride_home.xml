<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.ride.bookingride.view.fragment.RideHomeMapFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/crux_cabs_androids_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp">


                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_android_center_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/map_center_marker_ic"
                    android:tint="@color/black_full"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/layout_marker_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/iv_android_center_marker"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="-20dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_bg_circle_black"
                        android:tint="@color/black_full" />

                    <ImageView
                        android:id="@+id/marker_time"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="2\nmin"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_marker_pickup_eta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="10dp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_android_center_marker_cross"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:scaleX="0"
                    android:scaleY="0"
                    android:tint="@color/black_full"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_close_24dp" />


            </RelativeLayout>

            <include
                android:id="@+id/layout_src_destination"
                layout="@layout/view_source_destination_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp" />

            <ImageView
                android:id="@+id/iv_my_location_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/layout_src_destination"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/cabs_mylocation_button"
                android:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tkpd_main_green"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppBarTheme"
        app:contentInsetLeft="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitleTextAppearance="@style/ToolbarSubtitleText"
        app:titleTextAppearance="@style/ToolbarText" />
</RelativeLayout>
