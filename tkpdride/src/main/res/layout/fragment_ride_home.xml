<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.tokopedia.ride.bookingride.RideHomeFragment">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/material_toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar_layout"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_android_center_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/crux_cabs_center_marker_ic"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_my_location_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/crux_cabs_android"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="116dp"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/crux_cabs_mylocation_button"
                    android:visibility="visible"/>
            </RelativeLayout>

            <include layout="@layout/view_source_destination_picker"/>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/option_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
