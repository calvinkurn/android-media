<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_2"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3sp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/partial_flight_order_header_detail" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/bg_line_separator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    card_view:srcCompat="@drawable/ic_flight_round" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10">

                    <include layout="@layout/partial_flight_order_journey_view" />

                    <include layout="@layout/partial_flight_order_payment_info" />

                    <include layout="@layout/partial_flight_order_departure_schedule" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_line_separator" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order_detail"
                style="@style/TextView.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_background_tokopedia"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20"
                android:text="@string/flight_order_waiting_for_payment_button" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>