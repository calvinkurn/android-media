<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.digital.categorylist.view.compoundview.DigitalItemHeaderHolder
                android:id="@+id/header_my_transaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.tokopedia.digital.categorylist.view.compoundview.DigitalItemHeaderHolder
                android:id="@+id/header_subscription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.tokopedia.digital.categorylist.view.compoundview.DigitalItemHeaderHolder
                android:id="@+id/header_fav_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_ticker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_3"
            android:visibility="visible"
            tools:visibility="visible">

            <com.tokopedia.design.component.ticker.TickerView
                android:id="@+id/ticker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                app:tckv_indicator_off_color="@color/grey"
                app:tckv_indicator_on_color="@color/tkpd_main_green" />

        </LinearLayout>

        <com.tokopedia.core.customwidget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_digital_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.tokopedia.core.customwidget.SwipeToRefresh>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>