<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/digital_padding_4"
        android:layout_marginLeft="@dimen/digital_padding_8"
        android:layout_marginRight="@dimen/digital_padding_8"
        android:layout_marginTop="@dimen/digital_padding_6"
        android:orientation="vertical"
        android:padding="@dimen/digital_padding_14"
        tools:background="@drawable/digital_bg_banner_selected"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tv_desc_banner"
            style="@style/TextSubTitleMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Beli voucher game lebih hemat, diskon langsung sebesar Rp5.000. Banyak pilihan!"/>

        <LinearLayout
            android:id="@+id/holder_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/digital_padding_8">

            <TextView
                style="@style/TextSubTitleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_voucher_code"/>

            <TextView
                android:id="@+id/tv_voucher_code"
                style="@style/TextSubTitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_marginStart="@dimen/dp_3"
                android:paddingEnd="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingStart="@dimen/dp_5"
                android:textColor="@color/tkpd_main_green"
                tools:text="ANGGAKERENABIS"/>

            <TextView
                android:id="@+id/btn_copy"
                style="@style/TextSubTitleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/digital_white_grey_button_rounded"
                android:padding="@dimen/dp_3"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_10"
                android:text="@string/button_copy"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>