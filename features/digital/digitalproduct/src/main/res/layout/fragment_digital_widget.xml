<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/white"
            app:tabIndicatorColor="@color/tkpd_main_green"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/tkpd_main_green"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="@color/tkpd_dark_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey_100" />

        <com.tokopedia.digital.product.view.compoundview.DigitalWrapContentViewPager
            android:id="@+id/view_pager_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pulsa_place_holders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/dummy_view_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:background="@color/grey_200"
            android:textSize="@dimen/fontvs" />

        <View
            android:id="@+id/dummy_view_2"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/dummy_view_1"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/grey_200" />

    </RelativeLayout>

    <LinearLayout
        android:padding="@dimen/dp_16"
        android:id="@+id/error_view"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_error_network"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_error_message"
                tools:text="Terjadi Kendala pada Server"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_try_again"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:text="Coba Lagi"
                style="@style/Button.Submit.Green"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>