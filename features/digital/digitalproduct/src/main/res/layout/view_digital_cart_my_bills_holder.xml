<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/digital_bg_drop_shadow"
    android:elevation="@dimen/dp_4"
    android:orientation="vertical"
    android:padding="@dimen/dp_8"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_header_title"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:fontSize="title"
            app:textViewTheme="lightPrimary"
            app:weight="regular"
            tools:text="Bayar Otomatis" />

        <CheckBox
            android:id="@+id/cb_subscription"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:theme="@style/DigitalCheckboxAndRadioButton" />
    </LinearLayout>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:fontSize="small"
        app:weight="regular"
        tools:text="Pembayaran akan dilakukan secara otomatis pada 2 November 2018 dengan OvoCash." />
</LinearLayout>