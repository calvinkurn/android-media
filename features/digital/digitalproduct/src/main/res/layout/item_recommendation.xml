<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="82dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:maxWidth="82dp"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_5"
    android:paddingStart="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_5"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_operator"
        android:layout_marginBottom="@dimen/dp_8"
        android:scaleType="fitCenter"
        android:background="@drawable/container_circle_corners_border"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text_product_name"
        android:layout_marginBottom="@dimen/dp_4"
        tools:text="Rp 1.000.000"
        android:lines="1"
        android:textStyle="bold"
        style="@style/TextView.Micro.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_client_number"
        tools:text="081322867354"
        android:lines="1"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>