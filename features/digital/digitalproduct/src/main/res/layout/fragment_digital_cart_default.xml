<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newcart.presentation.fragment.DigitalCartDefaultFragment">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="LIstrik PLN" />

        <com.tokopedia.digital.newcart.presentation.compoundview.DigitalCartDetailHolderView
            android:id="@+id/view_cart_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tokopedia.digital.newcart.presentation.compoundview.DigitalCartCheckoutHolderView
            android:id="@+id/view_checkout_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom" />

    </LinearLayout>
</RelativeLayout>