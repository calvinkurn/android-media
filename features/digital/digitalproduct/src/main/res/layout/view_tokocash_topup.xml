<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/title_tokocash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="@string/tokocash_label_top_up"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/balance_tokocash"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/grey_300" />

    <com.tokopedia.digital.product.view.compoundview.DigitalProductChooserView
        android:id="@+id/digital_product_chooser_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10" />

    <CheckBox
        android:id="@+id/cb_instant_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="@string/label_instant_payment_digital"
        android:textColor="@color/light_disabled"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/btn_topup"
        style="@style/Button.Submit.Orange"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="@string/label_btn_buy_digital" />

</LinearLayout>
