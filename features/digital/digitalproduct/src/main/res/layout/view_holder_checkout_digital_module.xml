<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/dp_10">

    <android.support.v7.widget.CardView
        android:id="@+id/total_pembayaran"
        style="@style/CardViewDigital">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            tools:ignore="UselessLeaf">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_label_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/label_price_cart_digital"
                    android:textColor="@color/digital_voucher"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_value_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="end"
                    android:textColor="@color/digital_voucher"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="Rp. 50.000,-"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/holder_voucher_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_label_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/label_discount_cart_digital"
                    android:textColor="@color/digital_voucher"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_value_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="end"
                    android:textColor="@color/digital_voucher"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="Rp. 50.000,-"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_400"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_label_sub_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/label_total_payment_cart_digital"
                    android:textColor="@color/digital_voucher"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_value_sub_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="end"
                    android:textColor="@color/deep_orange_500"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:text="Rp. 50.000,-"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>

    <TextView
        android:id="@+id/btn_next"
        style="@style/DigitalButtonBuy"
        android:layout_height="@dimen/dp_50"
        android:text="@string/label_btn_next_cart_digital"/>

</LinearLayout>