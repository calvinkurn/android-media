<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/label"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/value"
        android:gravity="center|start"
        android:textColor="@color/digital_voucher_notes"
        tools:text="Nomor Pelanggan"/>

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/label"
        android:layout_toRightOf="@+id/label"
        android:textColor="@color/digital_voucher"
        tools:text="1234567891011afasfasdasdasdasdasd23"/>

</RelativeLayout>