<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_5"
    android:paddingTop="@dimen/dp_5">

    <RelativeLayout
        android:id="@+id/rl_holder_check_balance_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_holder_check_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_check_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:maxLines="1"
                android:padding="@dimen/dp_5"
                android:text="@string/digital_check_remain_balance"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_label_check_credit"
                style="@style/TextTitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_check_balance"
                android:padding="@dimen/dp_5"
                android:text="" />


            <TextView
                android:id="@+id/btn_check_client_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/green_button"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/digital_check_balance"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_error_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_check_credit"
                android:layout_alignLeft="@+id/tv_label_check_credit"
                android:textColor="@color/bright_red"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_holder_check_balance_wait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:visibility="invisible">

            <ProgressBar
                android:id="@+id/check_balance_progressbar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_check_balance"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tv_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/title_loading"
                android:textSize="@dimen/sp_16"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>


