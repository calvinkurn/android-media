<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             android:orientation="vertical"
             android:padding="@dimen/digital_padding_20">

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/TextSubTitleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/digital_padding_20"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:paddingTop="@dimen/digital_padding_10"
            tools:text="jabsdjabs;ldablsdla ohasdjha pajsdja;sd jaslkdjlasd jaskdja;sd laskda"/>

        <TextView
            android:id="@+id/tv_nominal"
            style="@style/TextTitleXXLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subtitle"
            android:layout_marginTop="@dimen/digital_padding_10"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:paddingTop="@dimen/digital_padding_10"
            android:textStyle="bold"
            tools:text="Rp. 500.000"/>

        <TextView
            android:id="@+id/btn_positive"
            style="@style/DigitalButtonBuy"
            android:layout_height="@dimen/tab_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/digital_orange_button"
            tools:text="@string/label_btn_next_cart_digital"/>

        <TextView
            android:id="@+id/btn_negative"
            style="@style/DigitalButtonBuy"
            android:layout_height="@dimen/tab_height"
            android:layout_above="@+id/btn_positive"
            android:layout_marginBottom="@dimen/digital_padding_10"
            android:background="@drawable/digital_white_button"
            android:textColor="@color/digital_item_sub_title"
            tools:text="@string/label_btn_next_cart_digital"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_main_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"/>
</FrameLayout>