<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16"
    android:background="@color/white"
    android:weightSum="3"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:id="@+id/text_label_note"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        tools:text="Silahkan cek sisa saldo Anda"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/view_remaining_balance"
        android:visibility="gone"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_label_date"
            tools:text="Sisa Saldo (12/05/2018)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_remaining_balance"
            android:textStyle="bold"
            tools:text="Rp. 590.000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/view_check_balance"
        android:gravity="center|end"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green_300"
            android:textStyle="bold"
            android:text="@string/emoney_button_check_balance"/>

    </LinearLayout>

</LinearLayout>