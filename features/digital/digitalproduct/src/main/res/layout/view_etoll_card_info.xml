<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_issuer"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/dp_16"
                    android:layout_weight="1"
                    tools:src="@drawable/emoney"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_300" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:width_weight="0.5"
                        app:corners="16"
                        android:id="@+id/text_label_card_number"
                        android:textSize="@dimen/sp_12"
                        android:text="@string/emoney_card_info_label_card_number"
                        android:layout_marginBottom="@dimen/dp_4" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/text_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:width_weight="1.0"
                        app:corners="16"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        tools:text="1234 - 1234 - 1234 - 1234"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey_300" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:layout_marginTop="0.1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_remaining_balance"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/text_label_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:width_weight="1"
                        app:height_weight="1"
                        app:corners="16"
                        android:layout_marginBottom="@dimen/dp_6"
                        android:text="@string/emoney_card_info_label_card_balance"/>

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:width_weight="1"
                        app:height_weight="1"
                        app:corners="16"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:id="@+id/text_remaining_balance"
                        android:textColor="@color/green_400"
                        android:textSize="@dimen/sp_32"
                        tools:text="Rp 800.000"/>

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_date"
                        app:corners="16"
                        tools:text="12 Mei 2018, 06:50"/>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>