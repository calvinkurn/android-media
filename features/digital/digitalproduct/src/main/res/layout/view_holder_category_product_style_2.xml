<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/digital_padding_16"
        android:paddingLeft="@dimen/digital_padding_16"
        android:paddingRight="@dimen/digital_padding_16"
        android:paddingStart="@dimen/digital_padding_16"
        android:paddingTop="@dimen/digital_padding_16">

        <TextView
            android:id="@+id/tv_title_category"
            style="@style/TextTitleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/digital_padding_16"
            android:paddingEnd="@null"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@null"
            android:paddingStart="@dimen/dp_3"
            tools:text="Beli Pulsa" />

        <LinearLayout
            android:id="@+id/holder_radio_chooser_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/holder_client_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/holder_chooser_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/holder_additional_info_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/holder_price_info_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/layout_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/digital_padding_16"
            android:visibility="gone"
            tools:visibility="visible">

            <CheckBox
                android:id="@+id/cb_instant_checkout"
                app:theme="@style/DigitalCheckboxAndRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/digital_margin_min_7"
                android:layout_marginStart="@dimen/digital_margin_min_7"
                android:text="@string/label_instant_payment_digital"
                android:textColor="@color/light_disabled"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/tooltip_instant_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/cb_instant_checkout"
                app:srcCompat="@drawable/info_icon" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_buy_digital"
        style="@style/Button.Submit.Orange"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/digital_padding_16"
        android:layout_marginTop="@dimen/digital_padding_16"
        android:layout_weight="0.40"
        android:text="@string/label_btn_buy_digital" />

</LinearLayout>