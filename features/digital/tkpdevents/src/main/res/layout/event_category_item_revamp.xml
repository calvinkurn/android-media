<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_category_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_8"
    android:clipChildren="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ms"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Rp3.123.123" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="Mulai Dari Harga:"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toTopOf="@+id/tv1_price"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Mulai Dari Harga:" />

        <View
            android:id="@+id/divider1"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:background="@color/grey_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_add_to_wishlist" />

        <TextView
            android:id="@+id/tv_add_to_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:background="?selectableItemBackground"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:text="1,2k"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@+id/divider2"
            app:layout_constraintStart_toEndOf="@id/divider2"
            app:layout_constraintTop_toTopOf="@id/divider2"
            tools:text="1,2k" />

        <View
            android:id="@+id/divider2"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:background="@color/grey_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_event_share" />

        <TextView
            android:id="@+id/tv_event_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            android:background="?selectableItemBackground"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_event_thumb"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_150"
            android:layout_marginBottom="@dimen/dp_14"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/tv_event_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv3_sold_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@drawable/rounded_rectangle_black_solid"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TERJUAL_298" />

        <TextView
            android:id="@+id/tv3_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@drawable/rounded_rectangle_black_solid"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:text="Exklusif"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv3_sold_cnt"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="EXCLUSIF" />

        <android.support.constraint.Guideline
            android:id="@+id/horizontal_guideline"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintGuide_percent="0.65" />

        <TextView
            android:id="@+id/tv4_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ms"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            android:background="@drawable/rounded_rectangle_black_translucent"
            android:drawablePadding="@dimen/dp_8"
            android:paddingEnd="@dimen/margin_ms"
            android:paddingLeft="@dimen/margin_vvvs"
            android:paddingRight="@dimen/margin_ms"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/iv_event_thumb"
            app:layout_constraintEnd_toStartOf="@+id/horizontal_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_default="wrap"
            tools:text="23 Jan '18 - 5 Des '18" />


        <TextView
            android:id="@+id/tv4_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ms"
            android:layout_marginEnd="@dimen/new_margin_med"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/new_margin_med"
            android:layout_marginStart="@dimen/dp_4"
            android:background="@drawable/rounded_rectangle_black_translucent"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingEnd="@dimen/dp_4"
            android:paddingLeft="@dimen/margin_vvvs"
            android:paddingRight="@dimen/dp_4"
            android:paddingStart="@dimen/margin_vvvs"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@+id/iv_event_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/horizontal_guideline"
            app:layout_constraintWidth_default="wrap"
            tools:text="Jakartaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />

        <TextView
            android:id="@+id/tv4_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            android:background="@drawable/rounded_rectangle_black_translucent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_vvvs"
            android:paddingRight="@dimen/margin_vvvs"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv4_date_time"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Indonesia Fashion Week" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>