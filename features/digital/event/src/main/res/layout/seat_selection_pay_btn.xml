<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_400"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        android:text="@string/screen_this_way"
        android:textSize="@dimen/sp_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/white"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_seats_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="@string/tersedia"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_seats__not_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toEndOf="@+id/tv_seats_available"
            android:layout_toRightOf="@+id/tv_seats_available"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="@string/terjual"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_10" />


        <TextView
            android:id="@+id/seats_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_toEndOf="@+id/tv_seats__not_available"
            android:layout_toRightOf="@+id/tv_seats__not_available"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:text="@string/terpilih"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:orientation="vertical"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tiket"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/black_70" />

            <TextView
                android:id="@+id/ticket_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_200"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/black_70" />

            <TextView
                android:id="@+id/ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/deep_orange_500" />

        </LinearLayout>

    </RelativeLayout>


    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/verifySeat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_16"
        app:cardBackgroundColor="@color/green_400"
        app:cardCornerRadius="@dimen/dp_2"
        app:cardElevation="@dimen/dp_2">

        <TextView
            android:id="@+id/button_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/selanjutnya"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

</LinearLayout>