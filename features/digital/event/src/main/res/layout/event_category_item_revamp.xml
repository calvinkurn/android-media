<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_category_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_8"
    android:clipChildren="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/red_800"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mulai_dari_harga"
            tools:text="Rp3.123.123" />

        <TextView
            android:id="@+id/mulai_dari_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/mulai_dari_harga"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            tools:text="Mulai Dari Harga:" />

        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/grey_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv4_location" />

        <TextView
            android:id="@+id/tv_add_to_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="?selectableItemBackground"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:text="1,2k"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            tools:text="1,2k" />

        <TextView
            android:id="@+id/tv_event_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="?selectableItemBackground"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toEndOf="@id/tv_add_to_wishlist"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            tools:text="fwve" />

        <ImageView
            android:id="@+id/iv_event_thumb"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_150"
            android:layout_marginBottom="@dimen/dp_14"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv3_sold_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/rounded_rectangle_orange_solid"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TERJUAL_298" />

        <TextView
            android:id="@+id/tv3_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/rounded_rectangle_orange_solid"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="Exklusif"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv3_sold_cnt"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="EXCLUSIF" />


        <TextView
            android:id="@+id/tv4_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:drawablePadding="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_8"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toStartOf="@+id/horizontal_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv4_event_title"
            app:layout_constraintWidth_default="wrap"
            tools:text="23 Jan '18 - 5 Des '18" />


        <TextView
            android:id="@+id/tv4_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_8"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingEnd="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_4"
            android:paddingStart="@dimen/dp_2"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv4_date_time"
            app:layout_constraintWidth_default="wrap"
            tools:text="Jakartaaaaaaaaaaaaaaaaaaaaaaegggergegregrege" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/rounded_rectangle_orange_solid"
            android:backgroundTint="#fdebec"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.03"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:textColor="#ea212d"
            android:textSize="11sp"
            android:textStyle="normal"
            android:visibility="invisible"
            app:layout_constraintBaseline_toBaselineOf="@id/tv4_location"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="20% OFF" />

        <TextView
            android:id="@+id/tv4_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_event_thumb"
            tools:text="Indonesia Fashion Week" />

        <TextView
            android:id="@+id/tv_calendar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:background="@color/white_95"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/black_54"
            android:textStyle="bold" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>