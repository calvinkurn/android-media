<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_ticket_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/rp_5980000"
        android:textAllCaps="false"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ticket_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ticket_name"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="Anak kecil di bawah umur 12 tahun harus didampingi orang dewasa berusia 18 tahun ke atas. Harga tiket sudah termasuk biaya layanan."
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ticket_sale_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frameLayout"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_25"
        android:text="@string/rp_5980000"
        android:textColor="@color/red_800"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_ticket_description"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_25">

        <TextView
            android:id="@+id/tv_sold_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/habis_terjual"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_decrement"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@drawable/minus_button_layerlist_green"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_remove" />

            <TextView
                android:id="@+id/tv_ticket_cnt"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/rectangle_transparent"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/black_54"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/btn_increment"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/add_button_layerlist_green"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_add" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/maks_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/frameLayout"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/max_ticket_warning"
        android:textColor="@color/green_nob"
        android:visibility="invisible" />
</RelativeLayout>