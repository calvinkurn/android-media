<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/htab_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone"
        tools:context="com.tokopedia.events.view.activity.EventsHomeActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/event_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/white">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/carousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="true"
                android:minHeight="?attr/actionBarSize"
                app:layout_scrollFlags="scroll">

                <TextView
                    android:id="@+id/search_input_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/rounded_rectangle_grey_solid"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_4"
                    android:text="@string/cari_event_lokasi"
                    android:textColor="@color/black_54"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_scrollFlags="scroll" />

                <com.tokopedia.abstraction.base.view.widget.TouchViewPager
                    android:id="@+id/event_bannerpager"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_input_view" />


                <com.tokopedia.events.view.utils.CirclePageIndicator
                    android:id="@+id/pager_indicator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:padding="@dimen/dp_2"
                    app:centered="false"
                    app:fillColor="@color/green_nob"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_bannerpager"
                    app:pageColor="@color/grey_400"
                    app:radius="@dimen/dp_3"
                    app:strokeColor="@color/transparent"
                    app:strokeWidth="0dp" />

                <TextView
                    android:id="@+id/promo_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/promo_button_text"
                    android:textColor="@color/green_nob"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/event_bannerpager" />

                <TextView
                    android:id="@+id/tv12_topevents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="Top Events"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pager_indicator" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_top_events"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/top_view_pager_height"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/white"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingBottom="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_24"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_24"
                    android:paddingStart="@dimen/dp_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv12_topevents" />

                <TextView
                    android:id="@+id/tv_addtocalendar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/calendar_bg"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/lihat_kalendar_event"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewpager_top_events"
                    app:layout_constraintWidth_default="spread" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_200"
                app:layout_scrollFlags="scroll" />


            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_78"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:minHeight="@dimen/dp_48"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/green_nob"
                app:tabIndicatorHeight="@dimen/dp_3"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/green_nob" />


        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/category_view_pager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v4.view.ViewPager>
    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>