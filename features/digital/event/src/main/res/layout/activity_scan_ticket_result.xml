<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <android.support.v7.widget.CardView
                            android:id="@+id/card_scan_ticket"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_16"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_15"
                            app:cardCornerRadius="@dimen/dp_8"

                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/top_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/owner_data_ll"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <ImageView
                                        android:id="@+id/cross_icon"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:layout_marginLeft="@dimen/dp_8"
                                        android:layout_marginTop="@dimen/dp_13"
                                        android:src="@drawable/ic_close_data" />


                                    <TextView
                                        android:id="@+id/ticket_owner_data"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_24"
                                        android:layout_marginTop="@dimen/dp_11"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="@string/owner_profile"
                                        android:textColor="@color/black_70"
                                        android:textSize="@dimen/sp_17"
                                        android:textStyle="normal" />

                                </LinearLayout>

                                <include
                                    android:id="@+id/redeem_ticket_success"
                                    layout="@layout/redeem_ticket_success"
                                    android:visibility="gone" />

                                <include
                                    android:id="@+id/ticket_alr_used"
                                    layout="@layout/ticket_alr_used"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/user_name_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_16"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="4sp"
                                    android:text="@string/userName"
                                    android:textColor="@color/black_54"
                                    android:textSize="12sp"
                                    android:textStyle="normal"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/user_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="6sp"
                                    android:textColor="@color/user_name_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="normal"
                                    tools:text="Harley Parlindungan Sitompul" />


                                <TextView
                                    android:id="@+id/user_gender_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="4sp"
                                    android:text="@string/userGender"
                                    android:textColor="@color/black_54"
                                    android:textSize="12sp"
                                    android:textStyle="normal"
                                    android:visibility="gone" />


                                <TextView
                                    android:id="@+id/user_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="6sp"
                                    android:textColor="@color/user_name_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="normal"
                                    tools:text="Pria" />


                                <TextView
                                    android:id="@+id/user_dob_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="4sp"
                                    android:text="@string/userDob"
                                    android:textColor="@color/black_54"
                                    android:textSize="12sp"
                                    android:textStyle="normal"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/user_dob"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="6sp"
                                    android:textColor="@color/user_name_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="normal"
                                    tools:text="31/12/2003" />

                                <TextView
                                    android:id="@+id/user_identity_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="4sp"
                                    android:text="@string/userIdentity"
                                    android:textColor="@color/black_54"
                                    android:textSize="12sp"
                                    android:textStyle="normal"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/user_identity_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_16"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="6sp"
                                    android:textColor="@color/user_name_text_color"
                                    android:textSize="16sp"
                                    android:textStyle="normal"
                                    tools:text="32571101920001" />


                                <ImageView
                                    android:id="@+id/divider1"
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:background="@drawable/dash_line_grey"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/top_view" />


                                <TextView
                                    android:id="@+id/event_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginRight="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_16"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="center_horizontal"
                                    android:lineSpacingExtra="6sp"
                                    android:textColor="@color/black_70"
                                    android:textSize="16sp"
                                    android:textStyle="normal"
                                    tools:text="Guns N’ Roses: Not In This Lifetime Tour Jakarta" />

                                <TextView
                                    android:id="@+id/event_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center_horizontal"
                                    android:lineSpacingExtra="8sp"
                                    android:textColor="@color/black_54"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    tools:text="Sabtu, 24 Juni 2018" />

                                <TextView
                                    android:id="@+id/event_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dp_4"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="8sp"
                                    android:text="Jakarta Convention Center"
                                    android:textColor="@color/black_54"
                                    android:textSize="14sp"
                                    android:textStyle="normal"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/redeem_ticket"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginRight="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_24"
                                    android:background="@drawable/rounded_rectangle_green_solid"
                                    android:gravity="center"
                                    android:padding="@dimen/dp_16"
                                    android:text="@string/btn_redeem_ticket"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_13"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/ticket_closed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginRight="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_24"
                                    android:background="@drawable/rounded_rectangle_green_solid"
                                    android:gravity="center"
                                    android:padding="@dimen/dp_16"
                                    android:text="@string/btn_ticket_redeemed"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_13"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/close_ticket"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_40"
                                    android:layout_marginLeft="@dimen/dp_24"
                                    android:layout_marginRight="@dimen/dp_24"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:background="@drawable/rectangle_white_solid"
                                    android:gravity="center"
                                    android:padding="@dimen/dp_16"
                                    android:text="@string/ticket_close"
                                    android:textColor="@color/black_38"
                                    android:textSize="@dimen/sp_14"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"></LinearLayout>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_alignLeft="@+id/card_scan_ticket"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_toLeftOf="@+id/cv_1"
                            android:background="@drawable/left_green_line"
                            android:elevation="@dimen/dp_2" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_alignRight="@+id/card_scan_ticket"
                            android:layout_marginTop="@dimen/dp_14"
                            android:layout_toRightOf="@+id/cv_1"
                            android:background="@drawable/right_green_line"
                            android:elevation="@dimen/dp_2" />


                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_1"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal|top"
                            app:cardCornerRadius="@dimen/dp_13"
                            app:cardElevation="@dimen/dp_4" />

                    </RelativeLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        android:layout_gravity="center_horizontal|top"
                        android:background="@color/white" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_2"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_horizontal|bottom"
                        app:cardCornerRadius="@dimen/dp_13"
                        app:cardElevation="@dimen/dp_8" />
                </FrameLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@color/white" />
            </FrameLayout>


        </ScrollView>

    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/prog_bar"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:visibility="gone"/>
</FrameLayout>