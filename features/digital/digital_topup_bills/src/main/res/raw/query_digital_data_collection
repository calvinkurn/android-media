query rechargeComponentData($data: DataCollectionType, $componentID: Int!) {
  rechargeComponentDataCollection(data: $data, componentID: $componentID) {
    data_collections {
      id
      key
      value
      selected
      filter_mapping
      group
      product {
        id
        attributes {
          desc
          detail
          detail_url
          detail_url_text
          info
          price
          price_plain
          status
          detail_compact
        }
      }
      operator {
        id
        attributes {
          name
          image
          image_url
          lastorder_url
          default_product_id
          ussd
          description
        }
      }
     }
  }
}