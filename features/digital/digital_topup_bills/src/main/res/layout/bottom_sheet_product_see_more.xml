<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/title_detail"
        style="@style/TextView.Small.Bold"
        android:layout_below="@+id/see_more_btn"
        android:layout_marginBottom="@dimen/dp_4"
        android:gravity="center_horizontal"
        android:lines="1"
        android:text="Details"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details"
        style="@style/TextView.Micro"
        android:layout_below="@+id/see_more_btn"
        android:layout_marginBottom="@dimen/dp_4"
        tools:text="Nikmati kuota 800MB - 1.5GB. BONUS:
Bonus 1GB Kuota Midnight (00:01-6:59) + 1GB Kuota Midnight RAFI + 3GB Videomax" />

    <TextView
        android:id="@+id/title_price"
        style="@style/TextView.Small.Bold"
        android:layout_below="@+id/see_more_btn"
        android:layout_marginBottom="@dimen/dp_4"
        android:gravity="center_horizontal"
        android:lines="1"
        android:text="Harga"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_price"
        style="@style/TextView.Micro.Orange.Bold"
        android:layout_below="@+id/see_more_btn"
        android:layout_marginBottom="@dimen/dp_4"
        android:gravity="center_horizontal"
        android:lines="1"
        tools:text="Pulsa 40.000"
        android:textAlignment="center"
        android:textStyle="bold" />

</LinearLayout>