<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_12">

    <TextView
        android:id="@+id/hint_input_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/sp_14"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/ac_input_number"
        app:layout_constraintEnd_toStartOf="@+id/img_operator"
        app:layout_constraintStart_toStartOf="@+id/ac_input_number"
        app:layout_constraintTop_toTopOf="@+id/ac_input_number"
        tools:text="0878128128172"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/img_operator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:contentDescription="@string/app_name"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@+id/ac_input_number"
        app:layout_constraintEnd_toStartOf="@+id/btn_clear_input_number"
        app:layout_constraintLeft_toRightOf="@+id/hint_input_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ac_input_number" />

    <Button
        android:id="@+id/btn_clear_input_number"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/digital_topup_ic_close"
        android:paddingBottom="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="@+id/ac_input_number"
        app:layout_constraintEnd_toStartOf="@+id/contact_picker_layout"
        app:layout_constraintLeft_toRightOf="@+id/img_operator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ac_input_number" />

    <AutoCompleteTextView
        android:id="@+id/ac_input_number"
        style="@style/HintTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:popupBackground="@color/white"
        android:textColor="@color/black_70"
        android:textColorHint="@color/grey_400"
        android:textSize="@dimen/sp_14"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/contact_picker_layout"
        tools:layout_editor_absoluteY="12dp" />

    <LinearLayout
        android:id="@+id/contact_picker_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@+id/ac_input_number"
        app:layout_constraintHorizontal_weight="0.75"
        app:layout_constraintLeft_toRightOf="@+id/ac_input_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ac_input_number"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_contact_picker"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/digital_topup_ic_contact" />

    </LinearLayout>

    <TextView
        android:id="@+id/error_input_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingStart="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_4"
        android:text="@string/title_empty_stock"
        android:textColor="@color/red_600"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/ac_input_number"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>