<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="vertical">

    <com.tokopedia.topupbills.telco.view.widget.DigitalTelcoClientNumberWidget
        android:id="@+id/telco_input_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.topupbills.telco.view.widget.DigitalRecentTransactionWidget
        android:id="@+id/recent_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.topupbills.telco.view.widget.DigitalPromoListWidget
        android:id="@+id/promo_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.design.component.Tabs
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:elevation="@dimen/dp_3"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/tkpd_main_green"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/tkpd_main_green"
        app:tabTextAppearance="@style/Tabs.Main"
        app:tabTextColor="@color/font_black_disabled_38" />

    <android.support.v4.view.ViewPager
        android:id="@+id/product_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>