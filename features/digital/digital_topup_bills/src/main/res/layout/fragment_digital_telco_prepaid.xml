<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buy_widget"
        android:id="@+id/main_container"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/digital_bg_pdp" />

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="gone"
                android:visibility="gone"
                app:tckv_content_text_size="@dimen/dp_11"
                app:tckv_indicator_off_color="@color/grey_550"
                app:tckv_indicator_on_color="@color/tkpd_main_green" />

            <android.support.v7.widget.CardView
                android:id="@+id/input_number_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticker_view"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_8">

                <com.tokopedia.topupbills.telco.view.widget.DigitalClientNumberWidget
                    android:id="@+id/telco_input_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5" />

            </android.support.v7.widget.CardView>

            <com.tokopedia.topupbills.telco.view.widget.DigitalRecentTransactionWidget
                android:id="@+id/recent_numbers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_number_area"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15" />

            <com.tokopedia.topupbills.telco.view.widget.DigitalPromoListWidget
                android:id="@+id/promo_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recent_numbers"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15" />

            <com.tokopedia.design.component.Tabs
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@+id/input_number_area"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:visibility="gone"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/tkpd_main_green"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/tkpd_main_green"
                app:tabTextAppearance="@style/Tabs.Secondary"
                app:tabTextColor="@color/font_black_disabled_38"
                tools:visibility="visible" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tab_layout"
                android:background="@color/separator_voucher"
                android:visibility="gone"/>

            <com.tokopedia.design.viewpager.WrapContentViewPager
                android:id="@+id/product_view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/layout_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tab_layout"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <com.tokopedia.topupbills.telco.view.widget.DigitalTelcoBuyWidget
        android:id="@+id/buy_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

