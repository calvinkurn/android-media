<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:maxWidth="100dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_4"
    android:paddingLeft="@dimen/dp_4"
    android:paddingTop="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_4"
    android:paddingRight="@dimen/dp_4"
    android:paddingBottom="@dimen/dp_16"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/digital_ic_squircle" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_operator"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_4"
            app:srcCompat="@drawable/digital_ic_emoney"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_client_number"
        style="@style/TextView.Micro.Bold"
        android:layout_marginBottom="@dimen/dp_4"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:text="081322867354" />

    <TextView
        android:id="@+id/text_product_name"
        style="@style/TextView.Micro.BlackSecondary"
        android:lines="1"
        tools:text="Rp 1.000.000" />

</LinearLayout>