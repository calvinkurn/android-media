<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_to_mybills_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:theme="@style/checkBoxStyle" />

        <TextView
            android:id="@+id/title"
            style="@style/TextView.Micro.Bold"
            android:layout_toRightOf="@+id/checkbox"
            android:lines="1"
            android:text="Add to MyBills"
            android:layout_alignTop="@+id/checkbox"
            android:layout_alignBottom="@+id/checkbox"
            android:gravity="center_vertical"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/title"
            android:layout_alignTop="@+id/checkbox"
            android:layout_alignBottom="@+id/checkbox"
            android:layout_marginLeft="@dimen/dp_9"
            app:srcCompat="@drawable/info_icon"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/desc_info"
            style="@style/TextView.Micro"
            android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            tools:text="Youâ€™ll be reminded to pay your bill every month on 25th"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>