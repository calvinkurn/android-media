<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/digital_bg_pdp" />

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/ticker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="gone"
            android:visibility="gone"
            app:tckv_content_text_size="@dimen/dp_11"
            app:tckv_indicator_off_color="@color/grey_550"
            app:tckv_indicator_on_color="@color/tkpd_main_green" />

        <com.tokopedia.topupbills.telco.view.widget.DigitalPostpaidClientNumberWidget
            android:id="@+id/telco_input_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticker_view"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15" />

        <com.tokopedia.topupbills.telco.view.widget.DigitalRecentTransactionWidget
            android:id="@+id/recent_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telco_input_number"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15" />

        <RelativeLayout
            android:id="@+id/layout_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_layout"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <com.tokopedia.topupbills.telco.view.widget.DigitalPromoListWidget
            android:id="@+id/promo_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recent_numbers"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15" />

        <com.tokopedia.topupbills.telco.view.widget.DigitalTelcoBuyWidget
            android:id="@+id/buy_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
