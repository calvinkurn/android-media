<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_2">

    <RelativeLayout
        android:id="@+id/layout_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/title_product"
            style="@style/TextView.Small.Bold"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="center_horizontal"
            android:lines="1"
            tools:text="Pulsa 40.000"
            android:textAlignment="center"
            android:textColor="@color/clr_f531353b"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_product"
            style="@style/TextView.Micro"
            android:layout_below="@+id/title_product"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="center_horizontal"
            android:lines="1"
            tools:text="Masa aktif 30 hari"
            android:textAlignment="center"
            android:textColor="@color/clr_ae31353b"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/see_more_btn"
            style="@style/TextView.Micro.Green.Bold"
            android:layout_below="@+id/desc_product"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="center_horizontal"
            android:lines="1"
            android:text="see more"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_price"
            style="@style/TextView.Micro.Orange.Bold"
            android:layout_below="@+id/see_more_btn"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="center_horizontal"
            android:lines="1"
            tools:text="Pulsa 40.000"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_promo_price"
            style="@style/TextView.Micro10"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_below="@+id/desc_product"
            android:lines="1"
            tools:text="Pulsa 40.000"
            android:textColor="@color/digital_title_header_non_active"
            android:textSize="@dimen/sp_10"
            android:layout_toRightOf="@+id/product_price"
            android:layout_alignTop="@+id/product_price"
            android:layout_alignBottom="@+id/product_price"
            android:gravity="center_vertical"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>