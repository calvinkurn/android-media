<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/telco_empty_state_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/sp_16">

    <TextView
        android:id="@+id/title_empty_product"
        style="@style/TextView.Title.Bold"
        android:layout_below="@+id/title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_85"
        android:lineHeight="@dimen/dp_18"
        android:lines="1"
        tools:text="Paket Roaming Tidak Tersedia" />

    <TextView
        android:id="@+id/desc_empty_product"
        style="@style/TextView.Small"
        android:layout_below="@+id/title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_horizontal"
        android:lineHeight="@dimen/dp_18"
        tools:text="Produk paket roaming untuk provider ini belum tersedia, silakan coba provider lainnya." />

</LinearLayout>