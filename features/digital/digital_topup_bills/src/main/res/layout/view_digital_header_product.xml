<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/digital_bg_grey_round_header"
    android:weightSum="2">

    <RelativeLayout
        android:id="@+id/layout_header_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:background="@drawable/bg_round_corner_solid_green"
        android:layout_weight="1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/header_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_4"
            android:layout_centerHorizontal="true"
            android:textColor="@color/font_white_primary_70"
            android:lines="1"
            app:typographyType="heading_5"
            tools:text="Prabayar" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_header_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:background="@color/digital_grey_bg_header"
        android:layout_weight="1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_4"
            android:layout_centerHorizontal="true"
            android:lines="1"
            android:textColor="@color/digital_title_header_non_active"
            app:typographyType="heading_5"
            tools:text="Pascabayar" />

    </RelativeLayout>

</LinearLayout>