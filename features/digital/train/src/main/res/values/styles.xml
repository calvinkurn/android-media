<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.White.MenuSmall" parent="Theme.White">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TrainButtonRound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/text_color_train_homepage_trip_button</item>
        <item name="android:background">@drawable/bg_train_button_round</item>
    </style>

    <style name="WidgetSelectPassengerView">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_20</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
    </style>

    <style name="WidgetSelectPassengerViewIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="TrainFilterLabel" parent="LabelLayout">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Tabs.Secondary.Train">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="selectedBold">false</item>
        <item name="android:textStyle">bold</item>
        <item name="footerIndicatorHeight">3dp</item>
    </style>

</resources>