<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_trip"
        android:layout_marginBottom="@dimen/dp_24"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="Perjalanan Pergi (GMR - LPN)"
        android:textSize="@dimen/sp_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_adult_count_passenger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Tiket Dewasa (1 x Rp320.000)"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/text_adult_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp320.000"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_infant_count_passenger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Tiket Dewasa (1 x Rp320.000)"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/text_infant_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp320.000"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Pembayaran Anda"/>

        <TextView
            android:id="@+id/text_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black"
            tools:text="Rp 320.000"/>

    </LinearLayout>

</LinearLayout>