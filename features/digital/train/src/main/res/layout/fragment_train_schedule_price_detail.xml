<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/text_trip"
            style="@style/TextView.Small.BlackPrimary"
            android:layout_marginBottom="@dimen/dp_20"
            android:textStyle="bold"
            tools:text="Perjalanan Pergi (GMR - LPN)" />

        <LinearLayout
            android:id="@+id/container_adult_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_adult_count_passenger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_black_primary_70"
                android:textSize="@dimen/sp_12"
                tools:text="Tiket Dewasa (1 x Rp320.000)" />

            <TextView
                android:id="@+id/text_adult_price"
                style="@style/TextView.Micro.BlackSecondary"
                tools:text="Rp320.000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_infant_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_infant_count_passenger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/font_black_primary_70"
                android:textSize="@dimen/sp_12"
                tools:text="Tiket Dewasa (1 x Rp320.000)" />

            <TextView
                android:id="@+id/text_infant_price"
                style="@style/TextView.Micro.BlackSecondary"
                tools:text="Rp320.000" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@color/grey_300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/train_schedule_detail_price_label_your_payment"
                android:textColor="@color/font_black_primary_70"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_primary_70"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                tools:text="Rp 320.000" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>