<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/dp_10">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_error_network"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/message_retry"
        style="@style/TextView.Small.Bold"
        android:layout_margin="@dimen/dp_5"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/msg_network_error_1" />

    <TextView
        android:id="@+id/sub_message_retry"
        style="@style/TextView.Micro"
        android:layout_margin="@dimen/dp_5"
        android:layout_gravity="center"
        android:text="@string/msg_network_error_2" />

    <Button
        android:id="@+id/button_retry"
        style="@style/Button"
        android:background="@drawable/bg_button_green"
        android:layout_margin="@dimen/dp_20"
        android:layout_gravity="center"
        android:text="Coba Lagi"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</LinearLayout>
