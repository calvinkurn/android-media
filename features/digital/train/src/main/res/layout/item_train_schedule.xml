<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@android:color/white"
        app:cardElevation="@dimen/dp_3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingStart="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_10"
            >

            <LinearLayout
                android:id="@+id/flag_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/train_name"
                style="@style/TextView.Small.Bold"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/flag_item"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/class_name"
                tools:text="Argo Dwipangga  Fak Prority 10F 154" />

            <TextView
                android:id="@+id/class_name"
                style="@style/TextView.Micro"
                android:layout_alignBottom="@+id/train_name"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/train_name"
                tools:text="Ekonomi (C)" />

            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/train_name"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_line_separator_vertical" />

            <include
                android:id="@+id/detail_trip"
                layout="@layout/view_train_search_trip_detail" />

            <TextView
                android:id="@+id/availability_seat"
                style="@style/TextView.Micro"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/separator"
                android:textColor="@color/colorRed"
                tools:text="Sisa 3 kursi" />

            <TextView
                android:id="@+id/price"
                style="@style/TextView.Small.Bold"
                android:layout_below="@+id/availability_seat"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toLeftOf="@+id/unit"
                tools:text="Rp430.000" />

            <TextView
                android:id="@+id/unit"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_alignBaseline="@+id/price"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/availability_seat"
                android:text=" /org" />

            <TextView
                android:id="@+id/tap_for_details"
                style="@style/TextView.Micro.Green"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/price"
                android:text="Lihat Detail" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>