<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4">

    <RelativeLayout
        android:id="@+id/layout_item_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_110"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/description_promo"
            style="@style/TextView.Small.Bold"
            android:ellipsize="end"
            android:maxLines="3"
            tools:text="Beli Tiket Pesawat dengan Kartu Kredit mandiri, Cashback hingga 300 Ribu" />

        <TextView
            android:id="@+id/title_code"
            style="@style/TextView.Small.BlackSecondary"
            android:layout_below="@+id/description_promo"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/travel_homepage_promo_code_label" />

        <TextView
            android:id="@+id/promo_code"
            style="@style/TextView.Small.Green"
            android:layout_below="@+id/description_promo"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/title_code"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            tools:text="LIBURANYUK" />

        <TextView
            android:id="@+id/copy_button"
            style="@style/TextView.Micro.Green"
            android:layout_alignBottom="@+id/promo_code"
            android:layout_alignTop="@+id/promo_code"
            android:layout_toRightOf="@id/promo_code"
            android:background="@drawable/bg_rounded_corners_green"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="@string/travel_homepage_promo_copy_label" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>