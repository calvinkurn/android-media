<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_trip"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/separator">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/departure_time_circle"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            app:srcCompat="@drawable/ic_round_fill_green" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/arrival_time_circle"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/ic_round_fill_green" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/arrival_time_circle"
            android:layout_below="@id/departure_time_circle"
            android:layout_centerHorizontal="true"
            android:background="@color/grey_300" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/origin_code"
            style="@style/TextView.Small.Bold"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:textSize="13sp"
            tools:text="19:25" />

        <TextView
            android:id="@+id/destination_code"
            style="@style/TextView.Small.Bold"
            android:layout_alignLeft="@+id/container_flight_time"
            android:layout_alignStart="@+id/container_flight_time"
            android:layout_below="@+id/container_flight_time"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:textSize="13sp"
            tools:text="19:25" />

        <TextView
            android:id="@+id/arrival_add_day"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_alignBaseline="@id/arrival_time"
            android:layout_below="@+id/container_flight_time"
            android:layout_toEndOf="@+id/destination_code"
            android:layout_toRightOf="@+id/destination_code"
            android:visibility="gone"
            tools:text="(+1 Hari)"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/container_flight_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/origin_code"
            android:layout_alignStart="@+id/origin_code"
            android:layout_below="@+id/origin_code"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/duration"
                style="@style/TextView.Micro.BlackDisabled"
                android:textSize="11sp"
                tools:text="8j 20m" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>