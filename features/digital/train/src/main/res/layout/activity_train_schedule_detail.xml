<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitleTextAppearance="@style/TitleTextAppearance.White"
        app:titleTextAppearance="@style/SubTitleTextAppearance" />

    <android.support.design.widget.TabLayout
        android:id="@+id/indicator"
        style="@style/Tabs.Secondary.Train"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/colorPrimary"
        footerColor="@color/colorPrimary"
        android:background="@color/white"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/TitlePageWhiteIndicator"
        app:tabTextColor="@color/font_black_disabled_38" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/indicator"
        android:layout_above="@+id/button_submit">

        <com.tokopedia.abstraction.base.view.widget.TouchViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_submit"
        style="@style/Button.Submit.Orange"
        android:layout_alignParentBottom="true"
        android:text="@string/label_choose" />

</RelativeLayout>
