<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_4"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:subtitleTextAppearance="@style/SubTitleTextAppearance"
        app:titleTextAppearance="@style/TitleTextAppearance" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include layout="@layout/header_train_schedule_detail"
            android:id="@+id/header_train_schedule_detail"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/indicator"
            android:layout_below="@+id/header_train_schedule_detail"
            style="@style/Tabs.Secondary.Train"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            android:elevation="@dimen/dp_2"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/colorPrimary"
            footerColor="@color/colorPrimary"
            android:background="@color/white"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextAppearance="@style/TitlePageWhiteIndicator"
            app:tabTextColor="@color/font_black_disabled_38"
            tools:targetApi="lollipop" />

        <RelativeLayout
            android:id="@+id/container_view_pager"
            android:layout_below="@id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.abstraction.base.view.widget.TouchViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <Button
            android:id="@+id/button_submit"
            style="@style/Button.Submit.Orange"
            android:layout_alignParentBottom="true"
            android:text="@string/label_choose"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_centerInParent="true"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
