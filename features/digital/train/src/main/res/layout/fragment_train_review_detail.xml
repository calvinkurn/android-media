<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container_train_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_orange"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.Micro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/train_countdown_label" />

                <com.tokopedia.common.travel.widget.CountdownTimeView
                    android:id="@+id/ct_countdown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    app:ctv_hour_title="@string/train_countdown_hour_label"
                    app:ctv_minute_title="@string/train_countdown_minute_label"
                    app:ctv_second_title="@string/train_countdown_second_label" />

            </LinearLayout>

            <com.tokopedia.design.component.CardWithAction
                android:id="@+id/train_departure_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_with_action_main"
                android:visibility="visible"
                app:cmw_action="Detail"
                tools:visibility="visible" />

            <com.tokopedia.design.component.CardWithAction
                android:id="@+id/train_return_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_with_action_main_no_top_border"
                android:visibility="visible"
                app:cmw_action="Detail"
                tools:visibility="visible" />

            <com.tokopedia.design.component.ticker.TickerView
                android:id="@+id/ticker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/train_review_label_passengers_data"
                style="@style/TextView.Small.BlackPrimary"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_train_passenger_info"
                tools:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_400" />

            <com.tokopedia.design.voucher.VoucherCartHachikoView
                android:id="@+id/voucher_cart_hachiko_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_400" />

            <com.tokopedia.train.reviewdetail.presentation.view.ViewTrainReviewDetailPriceSection
                android:id="@+id/view_train_review_detail_price_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_300" />

            <Button
                android:id="@+id/button_train_review_submit"
                style="@style/Button.Submit.Orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/train_review_button_text_choose_payment_method" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/train_review_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>