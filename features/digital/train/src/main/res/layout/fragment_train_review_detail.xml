<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.design.component.CardWithAction
            android:id="@+id/train_departure_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_with_action_main"
            android:visibility="visible"
            app:cmw_action="Detail"
            tools:visibility="visible" />

        <com.tokopedia.design.component.CardWithAction
            android:id="@+id/train_return_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_with_action_main"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/dp_16"
            app:cmw_action="Detail"
            tools:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Data Penumpang"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            tools:listitem="@layout/item_train_passenger_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/grey_400"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1" />

        <com.tokopedia.design.voucher.VoucherCartHachikoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"/>

        <View
            android:background="@color/grey_400"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1" />

        <LinearLayout
            android:padding="@dimen/dp_16"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Total Pembayaran"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Rp1.920.000"
                android:textColor="@color/orange_900"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>