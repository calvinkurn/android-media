<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_24"
    tools:showIn="@layout/fragment_train_schedule_detail">

    <TextView
        android:id="@+id/trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_24"
        android:textColor="@color/font_black_primary_70"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        tools:text="Perjalan Pergi" />

    <TextView
        android:id="@+id/date"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_alignBottom="@id/trip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/trip"
        android:gravity="center_vertical"
        tools:text="Jum, 29 Ags 2018" />

    <TextView
        android:id="@+id/train_name"
        style="@style/TextView.Small.BlackPrimary"
        android:layout_below="@+id/trip"
        tools:text="Argo Dwipangga 10" />

    <TextView
        android:id="@+id/train_class"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_below="@+id/train_name"
        tools:text="Eksekutif (B)" />

</RelativeLayout>