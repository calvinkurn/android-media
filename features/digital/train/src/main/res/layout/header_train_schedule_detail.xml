<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    app:layout_collapseMode="parallax"
    android:gravity="bottom"
    app:layout_collapseParallaxMultiplier="0.6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_origin_station_code"
            style="@style/TextView.TitleBig.Bold"
            android:gravity="center"
            tools:text="CGK" />

        <TextView
            android:id="@+id/header_origin_city_name"
            style="@style/TextView.Micro.BlackPrimary"
            android:gravity="center"
            tools:text="Jakarta"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>

    <com.tokopedia.train.scheduledetail.presentation.ArrowTrainView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_destination_station_code"
            style="@style/TextView.TitleBig.Bold"
            tools:text="DPS" />

        <TextView
            android:id="@+id/header_destination_city_name"
            style="@style/TextView.Micro.BlackPrimary"
            android:gravity="center"
            tools:text="Denpasar"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>