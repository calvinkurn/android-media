<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@drawable/bg_line_separator"
            android:orientation="vertical"
            android:showDividers="middle|end">

            <com.tokopedia.design.text.RangeInputView
                android:id="@+id/price_filter_search"
                style="@style/TrainFilterLabel"
                app:driv_label_max="@string/sort_label_max_price"
                app:driv_label_min="@string/sort_label_min_price"
                app:driv_typable="false"
                app:driv_value_max_length="@integer/max_length_price_input"
                app:driv_value_text_appearance="@style/TextView.Small.Bold" />

            <com.tokopedia.design.label.selection.text.SelectionTextLabelView
                android:id="@+id/selection_label_time_departure"
                style="@style/TrainFilterLabel"
                app:slv_title="@string/filter_time_departure" />

            <com.tokopedia.design.label.selection.text.SelectionTextLabelView
                android:id="@+id/selection_label_train_name"
                style="@style/TrainFilterLabel"
                app:slv_title="@string/filter_train_name" />

            <com.tokopedia.design.label.selection.text.SelectionTextLabelView
                android:id="@+id/selection_label_class_name"
                style="@style/TrainFilterLabel"
                app:slv_title="@string/filter_class_name" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>