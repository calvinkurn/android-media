<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_15">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.tokopedia.design.text.RangeInputView
                android:id="@+id/price_filter_search"
                style="@style/TrainFilterLabel"
                app:driv_label_max="@string/train_sort_label_max_price"
                app:driv_label_min="@string/train_sort_label_min_price"
                app:driv_typable="false"
                app:driv_value_max_length="@integer/max_length_price_input"
                app:driv_value_text_appearance="@style/TextView.Small.Bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_line_separator_vertical" />

            <com.tokopedia.design.label.selection.text.SelectionTextLabelView
                android:id="@+id/selection_label_time_departure"
                style="@style/TrainFilterLabel"
                app:slv_title="@string/train_filter_time_departure" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_line_separator_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"/>

            <com.tokopedia.design.label.selection.text.SelectionTextLabelView
                android:id="@+id/selection_label_train_name"
                style="@style/TrainFilterLabel"
                app:slv_title="@string/train_filter_train_name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_line_separator_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"/>

            <com.tokopedia.design.label.selection.text.SelectionTextLabelView
                android:id="@+id/selection_label_class_name"
                style="@style/TrainFilterLabel"
                app:slv_title="@string/train_filter_class_name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bg_line_separator_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>