<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_10">

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextView.TitleBig.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="@string/train_buyer_title" />

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/til_contact_name"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:hint="@string/train_buyer_full_name"
        android:padding="0dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/train_buyer_full_name_hint"
            android:lines="1"
            android:nextFocusForward="@+id/et_phone_number"
            android:singleLine="true"
            android:textAppearance="@style/TextView.Title"
            android:textColor="@color/font_black_secondary_54" />
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/til_phone_number"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_15"
        android:hint="@string/train_buyer_phone_number">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/train_buyer_phone_number_hint"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="15"
            android:nextFocusForward="@+id/et_email"
            android:singleLine="true"
            android:textAppearance="@style/TextView.Title"
            android:textColor="@color/font_black_secondary_54" />
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/til_email"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:hint="@string/train_buyer_email">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/train_buyer_email_hint"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextView.Title"
            android:textColor="@color/font_black_secondary_54" />
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/email_info"
        style="@style/TextView.Micro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:hint="@string/train_buyer_email_info"
        android:paddingLeft="@dimen/dp_5" />

</LinearLayout>