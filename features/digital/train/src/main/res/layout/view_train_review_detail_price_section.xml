<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_16"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/train_review_label_total_payment"
            android:textColor="@color/black"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:id="@+id/view_train_review_total_price"
            android:orientation="vertical">

            <TextView
                tools:text="Rp1.920.000"
                android:id="@+id/text_train_review_total_price"
                android:textColor="@color/orange_900"
                android:layout_marginBottom="@dimen/dp_8"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/train_review_text_label_see_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_250"
                    android:text="@string/train_review_label_see_detail"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/train_review_image_arrow"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_8"
                    android:tint="@color/green_250"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_down_grey"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:id="@+id/view_divider"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_300" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/container_train_review_price_detail"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/view_total_price_departure_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_departure_trip_passenger_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="GMR - BD (Dewasa) x 3"/>

            <TextView
                android:id="@+id/text_departure_trip_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="Rp960.000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:weightSum="2"
            android:id="@+id/view_total_price_return_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_return_trip_passenger_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="BD - GMR (Dewasa) x 3"/>

            <TextView
                android:id="@+id/text_return_trip_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="Rp960.000"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>