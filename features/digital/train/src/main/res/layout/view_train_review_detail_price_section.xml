<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_16"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/train_review_label_total_payment"
            style="@style/TextView.Small.BlackPrimary"
            android:textStyle="bold"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:id="@+id/view_train_review_total_price"
            android:orientation="vertical">

            <TextView
                tools:text="Rp1.920.000"
                android:id="@+id/text_train_review_total_price"
                android:textColor="@color/orange_900"
                android:layout_marginBottom="@dimen/dp_8"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/train_review_text_label_see_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_250"
                    android:text="@string/train_review_label_see_detail"
                    tools:text="@string/train_review_label_close"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/train_review_image_arrow"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_8"
                    android:tint="@color/green_250"
                    app:srcCompat="@drawable/ic_arrow_down_grey"
                    tools:src="@drawable/ic_arrow_up_grey"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:id="@+id/view_divider"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_300" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/container_train_review_price_detail"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:id="@+id/view_adult_total_price_departure_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_departure_trip_adult_passenger_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                tools:text="GMR - BD (Dewasa) x 3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/train_review_label_rp"/>

            <TextView
                android:id="@+id/text_departure_trip_adult_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="end"
                tools:text="960.000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/dp_8"
            android:weightSum="3"
            android:id="@+id/view_infant_total_price_departure_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_departure_trip_infant_passenger_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                tools:text="GMR - BD (Bayi) x 2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/train_review_label_rp"/>

            <TextView
                android:id="@+id/text_departure_trip_infant_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="end"
                tools:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/dp_8"
            android:weightSum="3"
            android:id="@+id/view_adult_total_price_return_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_return_trip_adult_passenger_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                tools:text="BD - GMR (Dewasa) x 3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/train_review_label_rp"/>

            <TextView
                android:id="@+id/text_return_trip_adult_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="end"
                tools:text="960.000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/dp_8"
            android:weightSum="3"
            android:id="@+id/view_infant_total_price_return_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_return_trip_infant_passenger_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                tools:text="BD - GMR (infant) x 3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/train_review_label_rp"/>

            <TextView
                android:id="@+id/text_return_trip_infant_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="end"
                tools:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:weightSum="3"
            android:id="@+id/view_extra_fee_departure_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_label_extra_fee_departure_trip"
                android:text="@string/train_review_label_extra_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                tools:text="Biaya layanan (GMR - LPN)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/train_review_label_rp"/>

            <TextView
                android:id="@+id/text_extra_fee_departure_trip"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="96.000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/dp_8"
            android:weightSum="3"
            android:id="@+id/view_extra_fee_return_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_label_extra_fee_return_trip"
                android:text="@string/train_review_label_extra_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                tools:text="Biaya layanan (LPN - GMR)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/train_review_label_rp"/>

            <TextView
                android:id="@+id/text_extra_fee_return_trip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="end"
                tools:text="96.000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:weightSum="3"
            android:id="@+id/view_discount_channel_departure_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_label_discount_channel_departure_trip"
                android:text="@string/train_review_label_discount_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                tools:text="Diskon Channel KAI (GMR - LPN)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/train_review_label_rp"/>

            <TextView
                android:id="@+id/text_discount_channel_departure_trip"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:textColor="@color/red_500"
                android:gravity="end"
                tools:text="96.000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="@dimen/dp_8"
            android:weightSum="3"
            android:id="@+id/view_discount_channel_return_trip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_label_discount_channel_return_trip"
                android:text="@string/train_review_label_discount_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                tools:text="Diskon Channel KAI (LPN - GMR)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/train_review_label_rp"/>

            <TextView
                android:id="@+id/text_discount_channel_return_trip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textColor="@color/red_500"
                android:gravity="end"
                tools:text="96.000"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:id="@+id/view_divider_2"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_300" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:weightSum="3"
        android:id="@+id/view_subtotal_price"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_label_subtotal_price"
            android:text="@string/train_review_label_subtotal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/train_review_label_rp"/>

        <TextView
            android:id="@+id/text_subtotal_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            tools:text="96.000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:visibility="gone"
        tools:visibility="visible"
        android:weightSum="3"
        android:id="@+id/view_discount_voucher"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_label_discount_voucher"
            android:text="@string/train_review_label_discount_voucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/train_review_label_rp"/>

        <TextView
            android:id="@+id/text_discount_voucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="@color/red_500"
            android:gravity="end"
            tools:text="96.000"/>

    </LinearLayout>

</LinearLayout>