<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_train_promo"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_40">

    <TextView
        android:id="@+id/title_promo"
        style="@style/TextView.Title.Bold"
        android:text="Promo"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <TextView
        android:id="@+id/see_all_promo"
        style="@style/TextView.Micro.Green"
        android:text="Lihat Semua"
        android:layout_alignTop="@+id/title_promo"
        android:layout_alignBottom="@+id/title_promo"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_train_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_promo"
        android:layout_marginTop="@dimen/dp_10"/>

</RelativeLayout>