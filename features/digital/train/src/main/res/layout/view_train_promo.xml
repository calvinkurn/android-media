<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_train_promo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_40"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_promo"
        style="@style/TextView.Title.Bold"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/travel_homepage_promo_label" />

    <TextView
        android:id="@+id/see_all_promo"
        style="@style/TextView.Micro.Green"
        android:layout_alignBottom="@+id/title_promo"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/title_promo"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:text="@string/travel_homepage_promo_see_all_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_train_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_promo"
        android:layout_marginTop="@dimen/dp_10" />

</RelativeLayout>