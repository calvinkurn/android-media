<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/include_header_detail_train"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_twenty_percent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_16">

            <ImageView
                android:id="@+id/departure_time_circle"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                app:srcCompat="@drawable/selector_train_detail"/>

            <TextView
                android:id="@+id/departure_time"
                style="@style/TextView.Micro.Green"
                android:layout_toEndOf="@+id/departure_time_circle"
                android:layout_toRightOf="@+id/departure_time_circle"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                tools:text="19:25" />

            <View
                android:layout_width="1dp"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_alignTop="@+id/departure_time_circle"
                android:layout_alignStart="@+id/departure_time_circle"
                android:layout_alignLeft="@+id/departure_time_circle"
                android:layout_alignBottom="@+id/arrival_time_circle"
                android:layout_height="wrap_content"
                android:layout_below="@+id/departure_time_circle"
                android:layout_above="@+id/arrival_time_circle"
                android:background="@color/grey_300"/>

            <ImageView
                android:id="@+id/arrival_time_circle"
                android:layout_alignTop="@+id/arrival_info"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_5"
                app:srcCompat="@drawable/selector_train_detail"/>

            <TextView
                android:id="@+id/arrival_time"
                android:layout_toEndOf="@+id/arrival_time_circle"
                android:layout_toRightOf="@+id/arrival_time_circle"
                android:layout_alignTop="@+id/arrival_info"
                style="@style/TextView.Micro.Green"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                tools:text="07:25"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/departure_time"
                android:layout_toRightOf="@+id/departure_time"
                android:id="@+id/departure_info"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/departure_date"
                    style="@style/TextView.Micro.BlackDisabled"
                    android:layout_marginBottom="@dimen/dp_8"
                    tools:text="Jumat, 29 Agustus 2018"/>

                <TextView
                    android:id="@+id/origin_station_name"
                    style="@style/TextView.Small"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textStyle="bold"
                    tools:text="Gambir (GMR)"/>

                <TextView
                    android:id="@+id/header_origin_city_name"
                    style="@style/TextView.Micro.BlackSecondary"
                    tools:text="Jakarta"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/train_duration"
                android:layout_below="@+id/departure_info"
                android:layout_alignStart="@+id/departure_info"
                android:layout_alignLeft="@+id/departure_info"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    app:srcCompat="@drawable/ic_clock_train"/>

                <TextView
                    android:id="@+id/trip_duration"
                    style="@style/TextView.Micro.BlackDisabled"
                    tools:text="12 jam, 20 menit"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/arrival_time"
                android:layout_toRightOf="@+id/arrival_time"
                android:layout_below="@+id/train_duration"
                android:id="@+id/arrival_info"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/arrival_date"
                    style="@style/TextView.Micro.BlackDisabled"
                    android:layout_marginBottom="@dimen/dp_8"
                    tools:text="Sabtu, 30 Agustus 2018"/>

                <TextView
                    android:id="@+id/destination_station_name"
                    style="@style/TextView.Small"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textStyle="bold"
                    tools:text="Lempuyangan (LPN)"/>

                <TextView
                    android:id="@+id/header_destination_city_name"
                    style="@style/TextView.Micro.BlackSecondary"
                    tools:text="Yogyakarta"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>