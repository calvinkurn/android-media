<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_one_way_trip"
            style="@style/TravelButtonRound"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:text="@string/train_homepage_one_way_label" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_round_trip"
            style="@style/TravelButtonRound"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/train_homepage_two_way_label"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_train_dashboard_destination_arrival"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_origin_station"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:descendantFocusability="beforeDescendants"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.Micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:gravity="start"
                    android:text="@string/train_homepage_origin_label" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_origin_station_label"
                    style="@style/TextView.Small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:hint="@string/train_homepage_origin_hint"
                    android:maxLines="2"
                    android:textColorHint="@color/grey_400" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_line_separator" />

            <LinearLayout
                android:id="@+id/layout_destination_station"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:descendantFocusability="beforeDescendants"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.Micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:gravity="end"
                    android:text="@string/train_homepage_destination_label" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_destination_station_label"
                    style="@style/TextView.Small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:hint="@string/train_homepage_destination_hint"
                    android:maxLines="2"
                    android:textColorHint="@color/grey_400" />

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_reverse_origin_destination"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:rotation="90"
            app:srcCompat="@drawable/ic_train_reverse" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <com.tokopedia.train.common.presentation.TextInputView
            android:id="@+id/text_input_view_date_departure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            app:tiv_icon="@drawable/ic_calendar_general"
            app:tiv_remove_background="true"
            app:tiv_title_text="Tanggal Pergi" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_line_separator" />

        <com.tokopedia.train.common.presentation.TextInputView
            android:id="@+id/text_input_view_date_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:visibility="gone"
            app:tiv_icon="@drawable/ic_calendar_general"
            app:tiv_remove_background="true"
            app:tiv_title_text="Tanggal Pulang"
            tools:visibility="visible" />

        <View
            android:id="@+id/separator_date_return"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_line_separator" />

        <com.tokopedia.train.common.presentation.TextInputView
            android:id="@+id/text_input_view_passenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            app:tiv_icon="@drawable/ic_train_passenger"
            app:tiv_remove_background="true"
            app:tiv_title_text="Penumpang" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_line_separator" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_search_ticket"
            style="@style/Button.Submit.Orange"
            android:layout_marginTop="@dimen/dp_20"
            android:text="Cari Tiket" />

        <!--Banner disini-->

    </LinearLayout>

</LinearLayout>
