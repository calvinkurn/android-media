<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/layout_lvl2"
    android:paddingBottom="@dimen/layout_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_travel_destination_article_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toStartOf="@id/tv_travel_destination_article_see_all"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="heading_3"
        tools:text="Ada ada di Jakarta?" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_travel_destination_article_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:textColor="@color/Green_G500"
        app:layout_constraintBottom_toBottomOf="@id/tv_travel_destination_article_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_travel_destination_article_title"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Lihat Semua" />


    <androidx.cardview.widget.CardView
        android:id="@+id/travel_destination_highlight_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:cardCornerRadius="@dimen/layout_lvl1"
        app:layout_constraintTop_toBottomOf="@id/tv_travel_destination_article_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_travel_destination_article_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="170dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@color/grey_500" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_travel_destination_article_item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_4"
                android:textColor="@color/Neutral_N0"
                app:layout_constraintBottom_toTopOf="@id/tv_travel_destination_article_item_title"
                app:typographyType="body_3"
                tools:text="25 Des 2019" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_travel_destination_article_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_16"
                android:textColor="@color/Neutral_N0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:typographyType="body_1"
                app:typographyWeight="bold"
                tools:text="The Most Epic Sumba Journey - TRAVELVLOG#1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_travel_destination_article_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/layout_lvl2"
        android:paddingRight="4dp"
        app:layout_constraintTop_toBottomOf="@id/travel_destination_highlight_article" />

</androidx.constraintlayout.widget.ConstraintLayout>