<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_16">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmeringTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:width_weight="0.6" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_shimmering"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmeringTv" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_shimmering_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_shimmering_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_180"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering" />


    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_shimmering_4"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_140"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering_2" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_shimmering_5"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_140"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering_3" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_shimmering_6"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering_4" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_shimmering_7"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_180"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering_5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="?actionBarSize"
        tools:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>