<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/banner_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone"
    tools:visibility="visible">

    <FrameLayout
        android:id="@+id/container_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_banner_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_banner_background_height"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/overlay_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_banner_background_height"
            android:alpha="0.32"
            android:background="#31353B"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/overlay_round"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </FrameLayout>

    <View
        android:id="@+id/white_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_background" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/dp_32"
        tools:layout_constraintGuide_begin="30dp" />

    <com.tokopedia.banner.Banner
        android:id="@+id/card_banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/banner_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>
