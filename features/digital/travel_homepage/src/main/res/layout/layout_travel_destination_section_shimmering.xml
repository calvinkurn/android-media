<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/layout_lvl3">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_1"
        android:layout_width="58dp"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:corners="8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/layout_lvl2"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:corners="8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shimmer_1"
        app:layout_constraintTop_toTopOf="parent"
        app:width_weight="0.5"
        android:layout_margin="@dimen/layout_lvl2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmer_layout_1"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_76"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@drawable/bg_white_rectangle_rounded_corner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_1"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:elevation="2dp"
        >

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/shimmer_2"
            android:layout_width="@dimen/dp_64"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmer_3"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/layout_lvl1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shimmer_2"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmer_4"
            android:layout_width="168dp"
            android:layout_height="@dimen/layout_lvl1"
            app:layout_constraintLeft_toRightOf="@id/shimmer_2"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/shimmer_3"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmer_5"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/layout_lvl1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shimmer_2"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmer_layout_2"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_76"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@drawable/bg_white_rectangle_rounded_corner"
        app:layout_constraintTop_toBottomOf="@id/shimmer_1"
        app:layout_constraintLeft_toRightOf="@id/shimmer_layout_1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:elevation="@dimen/dp_2">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/shimmer_6"
            android:layout_width="@dimen/dp_64"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmer_7"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/layout_lvl1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shimmer_6"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="168dp"
            android:layout_height="@dimen/layout_lvl1"
            app:layout_constraintLeft_toRightOf="@id/shimmer_6"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/shimmer_7"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/layout_lvl1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/shimmer_6"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>