<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmeringTv"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintEnd_toStartOf="@id/shimmeringTv2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shimmeringTv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_view_corners="dp_8"
        app:width_weight="0.5" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmeringTv2"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_view_corners="dp_8" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_shimmering"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_76"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        app:layout_constraintEnd_toStartOf="@id/image_shimmering_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmeringTv"
        app:loader_view_corners="dp_8" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_shimmering_2"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_76"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmeringTv"
        app:loader_view_corners="dp_8" />

</android.support.constraint.ConstraintLayout>