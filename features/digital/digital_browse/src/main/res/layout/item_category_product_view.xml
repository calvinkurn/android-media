<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_parent_layout"
    android:layout_margin="@dimen/dp_6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/category_product_image"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/category_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/color_text"
        android:textSize="@dimen/sp_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/category_product_image"
        app:layout_constraintStart_toStartOf="@+id/category_product_image"
        app:layout_constraintTop_toBottomOf="@+id/category_product_image"
        app:layout_constraintWidth_default="spread"
        tools:text="fcjgvhkjbknlmmkjkhgchxgdfhchvjbk" />

</androidx.constraintlayout.widget.ConstraintLayout>