<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/dp_8"
    android:paddingTop="@dimen/dp_8">

    <LinearLayout
        android:id="@+id/container_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_8"
            android:duplicateParentState="true"
            tools:src="@drawable/status_no_result" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_product"
            style="@style/TextView.Micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:gravity="center"
            android:maxLines="5"
            android:scrollHorizontally="false"
            android:singleLine="false"
            tools:text="Fashion wanita" />


    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_new_label"
        style="@style/TextView.Micro.WhitePrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_digital_browser_baru_label"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:text="@string/digital_browse_new_label"
        android:textSize="@dimen/sp_8"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>