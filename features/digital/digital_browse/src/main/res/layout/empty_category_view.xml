<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_30"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_error"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"
        android:src="@drawable/category_error" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/tv_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_16"
        android:gravity="center"
        android:text="@string/error_text1"
        android:textColor="@color/color_text"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/tv_error_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:text="@string/error_text2"
        android:textColor="@color/color_text"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/tv_button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_button_green"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/text_coba_lagi"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14" />

</LinearLayout>

