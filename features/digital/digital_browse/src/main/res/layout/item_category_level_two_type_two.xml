<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:paddingLeft="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dp_16"
        android:singleLine="true"
        android:textColor="@color/color_text"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/item_icon"
        app:layout_constraintStart_toEndOf="@+id/item_icon"
        app:layout_constraintTop_toTopOf="@+id/item_icon"
        tools:text="fcjgvhkjbknlmmkjkhgchxgdfhchvjbk" />

    <ImageView
        android:id="@+id/carrot"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:paddingRight="@dimen/dp_16"
        android:src="@drawable/carrot_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_icon" />


    <View
        android:id="@+id/child_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_14"
        android:background="@color/border_color"
        android:paddingLeft="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/child_recycler"
        app:layout_constraintStart_toEndOf="@+id/item_icon"
        app:layout_constraintTop_toBottomOf="@+id/item_name" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/child_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_32"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/child_divider"

        />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/border_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_icon"
        app:layout_constraintTop_toBottomOf="@+id/child_recycler" />


</android.support.constraint.ConstraintLayout>