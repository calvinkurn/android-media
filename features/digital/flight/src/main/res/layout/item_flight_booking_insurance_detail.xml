<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8">
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_insurance_detail"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_insurance_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_insurance_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_insurance_detail"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Pembatalan perjalanan"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        app:typographyType="body_3"
        android:textColor="@color/Neutral_N700_96"
        app:typographyWeight="bold"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_insurance_detail_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_insurance_detail_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_insurance_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_insurance_detail"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Kompensasi hingga Rp7.500.000"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        app:typographyType="body_3"
        android:layout_marginTop="@dimen/dp_2"

        />


    

</androidx.constraintlayout.widget.ConstraintLayout>