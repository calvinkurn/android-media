<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_8">

    <include layout="@layout/include_header_detail_flight" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/padding_16"
        android:paddingBottom="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/container_flight_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <TextView
                android:id="@+id/departure_time"
                style="@style/TextView.Micro.Green"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/departure_time_circle"
                android:layout_toRightOf="@+id/departure_time_circle"
                tools:text="19:25" />

            <TextView
                android:id="@+id/departure_date"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_alignBottom="@+id/departure_time"
                android:layout_marginStart="@dimen/margin_4"
                android:layout_marginLeft="@dimen/margin_4"
                android:layout_toRightOf="@+id/departure_time"
                tools:text="9 ags" />

            <ImageView
                android:id="@+id/departure_time_circle"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="@dimen/dp_15"
                app:srcCompat="@drawable/selector_flight_detail" />

            <TextView
                android:id="@+id/arrival_time"
                style="@style/TextView.Micro.Green"
                android:layout_alignBottom="@+id/arrival_date"
                android:layout_toRightOf="@+id/arrival_time_circle"
                tools:text="19:25" />

            <TextView
                android:id="@+id/arrival_date"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_below="@+id/container_departure_detail"
                android:layout_alignLeft="@+id/container_departure_detail"
                tools:text="9 ags" />

            <ImageView
                android:id="@+id/arrival_time_circle"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:layout_alignLeft="@+id/departure_time_circle"
                android:layout_alignBottom="@+id/arrival_time"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                app:srcCompat="@drawable/selector_flight_detail" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/arrival_time_circle"
                android:layout_below="@id/departure_time_circle"
                android:layout_alignLeft="@+id/departure_time_circle"
                android:layout_marginLeft="4dp"
                android:background="@color/grey_300" />

            <RelativeLayout
                android:id="@+id/container_departure_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/departure_date"
                android:layout_alignLeft="@+id/departure_date">

                <TextView
                    android:id="@+id/departure_airport_name"
                    style="@style/TextView.Small"
                    android:textStyle="bold"
                    tools:text="Jakarta (CGK)" />

                <TextView
                    android:id="@+id/departure_desc_airport_name"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_below="@+id/departure_airport_name"
                    android:layout_alignStart="@+id/departure_airport_name"
                    android:layout_alignLeft="@+id/departure_airport_name"
                    tools:text="Soekarno-Hatta Intl Airport" />

                <TextView
                    android:id="@+id/departure_terminal"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_below="@+id/departure_desc_airport_name"
                    android:layout_alignStart="@+id/departure_airport_name"
                    android:layout_alignLeft="@+id/departure_airport_name"
                    android:visibility="gone"
                    tools:text="Terminal 1*"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/container_flight_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/departure_terminal"
                    android:layout_alignStart="@id/departure_desc_airport_name"
                    android:layout_alignLeft="@id/departure_desc_airport_name"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            app:srcCompat="@drawable/ic_clock_flight" />

                        <TextView
                            android:id="@+id/flight_time"
                            style="@style/TextView.Micro.BlackDisabled"
                            tools:text="8j 20m" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_flight_stop_over"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            style="@style/TextView.Micro.BlackDisabled"
                            android:layout_marginTop="@dimen/margin_8"
                            android:text="@string/flight_detail_transit_label"
                            tools:text="Transit: 1 kali berhenti"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_flight_stop_over"
                            style="@style/TextView.Micro.BlackDisabled"
                            android:layout_marginTop="@dimen/margin_8"
                            tools:text="Transit: 1 kali berhenti" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


            <TextView
                android:id="@+id/arrival_airport_name"
                style="@style/TextView.Small"
                android:layout_below="@+id/arrival_date"
                android:layout_alignStart="@+id/arrival_date"
                android:layout_alignLeft="@+id/arrival_date"
                android:textStyle="bold"
                tools:text="Jakarta (CGK)" />

            <TextView
                android:id="@+id/arrival_desc_airport_name"
                style="@style/TextView.Micro.BlackSecondary"
                android:layout_below="@+id/arrival_airport_name"
                android:layout_alignStart="@+id/arrival_airport_name"
                android:layout_alignLeft="@+id/arrival_airport_name"
                tools:text="Soekarno-Hatta Intl Airport" />

            <TextView
                android:id="@+id/arrival_terminal"
                style="@style/TextView.Micro.BlackSecondary"
                android:layout_below="@+id/arrival_desc_airport_name"
                android:layout_alignStart="@+id/arrival_airport_name"
                android:layout_alignLeft="@+id/arrival_airport_name"
                android:visibility="gone"
                tools:text="Terminal 3*"
                tools:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/transit_info"
            style="@style/TextView.Small.BlackSecondary"
            android:layout_width="match_parent"
            android:layout_below="@+id/container_flight_info"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/margin_16"
            android:background="@drawable/bg_stroke_dash_green_flight"
            android:padding="@dimen/dp_10"
            android:visibility="gone"
            tools:text="Transit Selama 5 Jam 40 menit di Muscat (MCT)"
            tools:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/container_pnr"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/black_twenty_percent" />
</LinearLayout>