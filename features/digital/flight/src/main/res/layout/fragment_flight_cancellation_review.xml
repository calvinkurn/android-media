<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/full_page_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_review_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_apps"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_apps"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/container_additional_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_16"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_16">

                <TextView
                    android:id="@+id/tv_departure_label"
                    style="@style/TextView.Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="@string/flight_label_additional_data" />

                <LinearLayout
                    android:id="@+id/container_additional_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/TextView.Micro.BlackDisabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/flight_cancellation_reason_label" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_cancellation_reason"
                        style="@style/TextView.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/flight_cancellation_reason_label" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_additional_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/TextView.Micro.BlackDisabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/flight_cancellation_support_docs_label" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_attachments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_16"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/padding_16">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TextView.Small.Bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/flight_cancellation_review_total_refund_label" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txt_total_refund"
                    style="@style/TextView.Title.OrangeRed.Bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    tools:text="@string/flight_cancellation_review_total_refund_label" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/button_submit"
                    style="@style/Button.Submit.Orange"
                    android:text="@string/flight_cancellation_review_button" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>