<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/full_page_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="@dimen/dp_20"
            tools:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="@string/flight_booking_atc_loading_label" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/container_full_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tokopedia.design.component.ticker.TickerView
                    android:id="@+id/flight_ticker_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone"
                    app:tckv_content_text_size="@dimen/dp_11"
                    app:tckv_indicator_off_color="@color/grey_550"
                    app:tckv_indicator_on_color="@color/tkpd_main_green"
                    tools:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingLeft="@dimen/padding_16"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingRight="@dimen/padding_16"
                    android:paddingBottom="@dimen/dp_20">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextView.Micro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/flight_booking_finish_transaction_label"/>

                    <com.tokopedia.common.travel.widget.CountdownTimeView
                        android:id="@+id/countdown_finish_transaction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        app:ctv_hour_title="@string/flight_label_hours"
                        app:ctv_minute_title="@string/flight_label_minute"
                        app:ctv_second_title="@string/flight_label_second" />
                </LinearLayout>

                <com.tokopedia.design.component.CardWithAction
                    android:id="@+id/cwa_departure_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_with_action_main"
                    android:visibility="gone"
                    app:cmw_action="Detail"
                    tools:visibility="visible" />

                <com.tokopedia.design.component.CardWithAction
                    android:id="@+id/cwa_return_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_with_action_main"
                    android:visibility="gone"
                    app:cmw_action="Detail"
                    tools:visibility="gone" />

                <!--<include-->
                    <!--layout="@layout/partial_flight_booking_contact_form"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16"
                    android:background="@color/white">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextView.TitleBig.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/flight_booking_contact_information"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/flight_booking_passenger_data_subtitle"
                        app:typographyType="body_3"
                        android:layout_marginTop="@dimen/dp_8"
                        />

                    <com.tokopedia.common.travel.widget.TravellerInfoWidget
                        android:id="@+id/widget_partial_traveller_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingLeft="@dimen/padding_16"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingRight="@dimen/padding_16"
                    android:paddingBottom="@dimen/dp_10">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextView.TitleBig.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/flight_booking_passenger_data_label"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"/>

                    <LinearLayout
                        android:id="@+id/container_same_as_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextView.Micro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/flight_booking_data_pemesan_sama_contact_label" />

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/checkbox"
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_gravity="center_vertical"
                            android:theme="@style/checkBoxStyle" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_passengers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/insurance_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingLeft="@dimen/padding_16"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingRight="@dimen/padding_16"
                    android:paddingBottom="@dimen/dp_10">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_insurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/padding_16"
                    android:paddingLeft="@dimen/padding_16"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingEnd="@dimen/padding_16"
                    android:paddingRight="@dimen/padding_16"
                    android:paddingBottom="@dimen/dp_10">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextView.TitleBig.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:text="@string/flight_booking_price_detail"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_price_lists"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/bg_line_separator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextView.Title.Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/flight_booking_total_price_label"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_total_price"
                            style="@style/TextView.Title.Bold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            tools:text="Rp45.846.900"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_apps"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_submit"
                        style="@style/Button.Submit.Orange"
                        android:text="@string/flight_booking_submit_button_label" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>


</RelativeLayout>
