<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_4">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmer_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:width_weight="0.4" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmer_2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/shimmer_1"
            app:width_weight="0.8" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmer_3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/shimmer_2"
            app:width_weight="0.6" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/shimmer_4"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmer_3" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmer_5"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/shimmer_4"
            app:layout_constraintLeft_toRightOf="@id/shimmer_4"
            app:layout_constraintTop_toTopOf="@id/shimmer_4" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/shimmer_6"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/shimmer_4"
            app:layout_constraintLeft_toRightOf="@id/shimmer_5"
            app:layout_constraintStart_toEndOf="@id/shimmer_5"
            app:layout_constraintTop_toTopOf="@id/shimmer_4" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmer_7"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/shimmer_4"
            app:layout_constraintLeft_toRightOf="@id/shimmer_6"
            app:layout_constraintStart_toEndOf="@id/shimmer_6"
            app:layout_constraintTop_toTopOf="@id/shimmer_4" />


    </android.support.constraint.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>