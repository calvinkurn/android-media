<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8"
    android:layout_marginLeft="@dimen/margin_16"
    android:layout_marginRight="@dimen/margin_16"
    android:layout_marginTop="@dimen/margin_8"
    android:background="@drawable/bg_flight_search_item"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="@dimen/flight_elevation_level"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.design.component.TextViewCompat
            style="@style/TextView.Small.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/flight_search_selengkapnya_label" />

        <com.tokopedia.design.component.TextViewCompat
            style="@style/TextView.Micro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/flight_search_selengkapnya_desc" />

        <com.tokopedia.design.component.ButtonCompat
            style="@style/Button.Secondary.Green"
            android:id="@+id/btn_show_all_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/flight_search_show_all_label" />

    </LinearLayout>
</LinearLayout>