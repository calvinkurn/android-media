<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_4"
    android:paddingTop="@dimen/padding_4">

    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_flight_gray_rounded_dashed">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_attachment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_flight_camera" />

    </FrameLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_toEndOf="@+id/image_container"
         android:layout_toRightOf="@+id/image_container"
         android:orientation="horizontal"
         android:padding="@dimen/padding_16">

         <android.support.v7.widget.AppCompatTextView
             android:id="@+id/tv_filename"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawablePadding="@dimen/padding_16"
             android:drawableRight="@drawable/ic_flight_cross"
             android:drawableEnd="@drawable/ic_flight_cross"
             android:layout_gravity="center_vertical"
             android:lines="1"
             android:ellipsize="end"
             tools:text="3341aaaa3asdfa12313143413.JPG" />


     </LinearLayout>
</LinearLayout>