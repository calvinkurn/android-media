<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_submit"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@drawable/flight_appbar_always_elevated"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleTextAppearance="@style/TextView.Title"
                app:contentScrim="@color/white"
                app:expandedTitleMarginEnd="12dp"
                app:expandedTitleMarginStart="12dp"
                app:expandedTitleTextAppearance="@style/TextView.Title"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                <include
                    layout="@layout/include_header_flight_detail"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="bottom"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.6" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:subtitleTextAppearance="@style/TitleTextAppearance.White"
                    app:titleTextAppearance="@style/SubTitleTextAppearance" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/indicator"
                style="@style/Tabs.Secondary.Flight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorColor="@color/colorPrimary"
                footerColor="@color/colorPrimary"
                android:background="@color/white"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextAppearance="@style/TitlePageWhiteIndicator"
                app:tabTextColor="@color/font_black_disabled_38" />

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_submit"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.tokopedia.abstraction.base.view.widget.TouchViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
        android:id="@+id/button_submit"
        style="@style/Button.Submit.Orange"
        android:layout_alignParentBottom="true"
        android:text="@string/flight_label_choose_button" />
</RelativeLayout>
