<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_apps">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.tokopedia.flight.common.view.HorizontalProgressBar
                android:id="@+id/horizontal_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_bar_height" />

            <com.tokopedia.design.component.ticker.TickerView
                android:id="@+id/flight_ticker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_4"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                app:tckv_content_text_size="@dimen/dp_11"
                app:tckv_indicator_off_color="@color/grey_550"
                app:tckv_indicator_on_color="@color/tkpd_main_green"
                tools:visibility="visible" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fitsSystemWindows="true" />
        </LinearLayout>
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>


    <include layout="@layout/include_filter_bottom_action_view" />

</android.support.design.widget.CoordinatorLayout>