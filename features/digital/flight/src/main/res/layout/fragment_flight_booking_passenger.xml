<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context="com.tokopedia.flight.booking.view.fragment.FlightBookingPassengerFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_24">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView.Micro.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:paddingStart="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:text="@string/flight_passenger_data_diri_label"
                android:textSize="@dimen/sp_18"/>

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_first_name"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_weight="1"
                android:hint="@string/flight_booking_passenger_first_name_hint">

                <com.tokopedia.common.travel.widget.InstantAutoCompleteTextView
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/flight_booking_passenger_firstname_secondary_hint"
                    android:imeActionLabel="@string/label_next"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/et_last_name"
                    android:inputType="textNoSuggestions|textVisiblePassword|textFilter"
                    android:importantForAutofill="no"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_last_name"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_weight="1"
                android:hint="@string/flight_booking_passenger_last_name_hint">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/flight_booking_passenger_last_name_secondary_hint"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/flight_booking_passenger_title_hint"
                app:typographyType="body_3" />

            <com.tokopedia.common.travel.widget.filterchips.FilterChipRecyclerView
                android:id="@+id/rv_passenger_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_15"
                />

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_birth_date"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:hint="@string/flight_booking_passenger_birthdate_hint">

                <com.tokopedia.design.component.EditTextCompat
                    android:id="@+id/et_birth_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/flight_booking_passenger_birthdate_secondary_hint"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    app:editTextDrawableRightCompat="@drawable/ic_system_action_dropdown_grayscale_24" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>
            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/birthdate_helper_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                tools:text="Penumpang anak (berusia 2-11 tahun)"
                app:typographyType="body_3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_passport_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView.Micro.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:paddingStart="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingEnd="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16"
                android:text="@string/flight_passenger_data_passport_label"
                android:textSize="@dimen/dp_18"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView.Micro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:paddingStart="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingEnd="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16"
                android:text="@string/flight_passenger_data_passport_description" />

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_passport_no"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_15"
                android:hint="@string/flight_passenger_passport_number_hint"
                android:paddingStart="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingEnd="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_passport_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/flight_passenger_passport_number_secondary_hint"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>


            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_passport_expiration_date"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/flight_passenger_passport_expiration_hint"
                android:paddingStart="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16">

                <com.tokopedia.design.component.EditTextCompat
                    android:id="@+id/et_passport_expiration_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/flight_passenger_passport_expiration_secondary_hint"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    app:editTextDrawableRightCompat="@drawable/ic_system_action_dropdown_grayscale_24"  />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/passport_expiration_helper_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/flight_booking_passenger_passport_expiry_helper_text"
                app:typographyType="body_3" />


            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_nationality"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginBottom="@dimen/dp_15"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/flight_passenger_nationality_hint"
                android:paddingStart="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingEnd="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16">

                <com.tokopedia.design.component.EditTextCompat
                    android:id="@+id/et_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/flight_passenger_nationality_secondary_hint"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    app:editTextDrawableRightCompat="@drawable/ic_system_action_dropdown_grayscale_24"  />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>


            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_passport_issuer_country"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_15"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/flight_passenger_passport_issuer_country_hint"
                android:paddingStart="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingEnd="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16">

                <com.tokopedia.design.component.EditTextCompat
                    android:id="@+id/et_passport_issuer_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/flight_passenger_passport_issuer_country_secondary_hint"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    app:editTextDrawableRightCompat="@drawable/ic_system_action_dropdown_grayscale_24"  />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/luggage_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_16"
            android:paddingLeft="@dimen/padding_16"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/padding_16"
            android:paddingRight="@dimen/padding_16"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView.TitleBig.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/flight_booking_passenger_luggage_label" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_luggages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/meals_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_16"
            android:paddingLeft="@dimen/padding_16"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/padding_16"
            android:paddingRight="@dimen/padding_16"
            android:paddingBottom="@dimen/dp_10"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView.TitleBig.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="@string/flight_booking_passenger_meal_label" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_meals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_submit"
                style="@style/Button.Submit.Green"
                android:text="@string/flight_booking_passenger_submit_button" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>


