<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/shimmering_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flight_booking_route_summary"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/item_flight_booking_route_summary_shimmering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8" />

        <include
            layout="@layout/item_flight_booking_route_summary_shimmering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8" />

    </LinearLayout>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_layout_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_28"
        app:corners="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_1"
        app:use_gradient="true"
        app:width_weight="0.7" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/shimmering_layout_card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/shimmering_layout_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                app:corners="20"
                app:layout_constraintEnd_toStartOf="@+id/shimmering_layout_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:use_gradient="true" />

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/shimmering_layout_4"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                app:corners="20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/shimmering_layout_3"
                app:use_gradient="true" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/shimmering_layout_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                app:corners="20"
                app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_3"
                app:use_gradient="true"
                app:width_weight="0.5" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                app:corners="20"
                app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_5"
                app:use_gradient="true"
                app:width_weight="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <View
        android:id="@+id/shimmering_layout_6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:background="#f3f4f5"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_card_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_layout_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        app:corners="20"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_6"
        app:use_gradient="true"
        app:width_weight="0.7" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_layout_7"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        app:corners="20"
        app:layout_constraintEnd_toStartOf="@+id/shimmering_layout_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_9"
        app:use_gradient="true"
        app:width_weight="0.5" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmering_layout_8"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:corners="20"
        app:layout_constraintBottom_toBottomOf="@+id/shimmering_layout_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmering_layout_7"
        app:use_gradient="true" />

    <LinearLayout
        android:id="@+id/shimmering_layout_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_7">

        <include layout="@layout/item_flight_booking_passenger_list_shimmering" />

        <include layout="@layout/item_flight_booking_passenger_list_shimmering" />

        <include layout="@layout/item_flight_booking_passenger_list_shimmering" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="#f3f4f5" />

        <include layout="@layout/item_flight_booking_insurance_shimmering" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="#f3f4f5" />

        <include layout="@layout/item_flight_booking_insurance_shimmering" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="#f3f4f5" />
    </LinearLayout>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/shimmering_layout_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_10">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                app:corners="20"
                app:use_gradient="true" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                app:corners="20"
                app:use_gradient="true"
                app:width_weight="0.5" />

        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <View
        android:id="@+id/shimmering_layout_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:background="#f3f4f5"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_11" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        app:corners="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_12"
        app:use_gradient="true" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_layout_14"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:corners="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_12"
        app:use_gradient="true" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        app:corners="20"
        app:layout_constraintBottom_toBottomOf="@+id/shimmering_layout_13"
        app:layout_constraintEnd_toStartOf="@+id/shimmering_layout_13"
        app:layout_constraintTop_toTopOf="@+id/shimmering_layout_13"
        app:use_gradient="true" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmering_layout_13"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:corners="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_14"
        app:use_gradient="true" />

    <View
        android:id="@+id/shimmering_layout_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:background="#f3f4f5"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_13" />

    <Button
        style="@style/Button.Submit.Orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="Lanjut Pembayaran"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_15" />


</androidx.constraintlayout.widget.ConstraintLayout>