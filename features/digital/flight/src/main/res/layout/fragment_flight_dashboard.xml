<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/background_apps"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        tools:visibility="visible" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/dashboard_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.tokopedia.design.component.ticker.TickerView
                android:id="@+id/flight_ticker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_4"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                app:tckv_content_text_size="@dimen/dp_11"
                app:tckv_indicator_off_color="@color/grey_550"
                app:tckv_indicator_on_color="@color/tkpd_main_green"
                tools:visibility="visible" />

            <include
                layout="@layout/partial_flight_dashboard_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flight_ticker_view" />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>