<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_28"
    >

    <View
        android:id="@+id/shimmering_seperator_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f3f4f5"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_tv_1"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/shimmering_seperator_1"
        android:layout_marginTop="@dimen/dp_28"
        app:width_weight="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toStartOf="@id/loader_tv_2"
        />
    
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_tv_2"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_8"
        app:layout_constraintEnd_toStartOf="@id/loader_iv_1"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintRight_toLeftOf="@id/loader_iv_1"
        app:layout_constraintTop_toTopOf="@id/loader_tv_1"
        />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_iv_1"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="@id/loader_tv_2"
        app:layout_constraintBottom_toBottomOf="@id/loader_tv_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>