<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_6"
    android:layout_marginBottom="@dimen/dp_6">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_4">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_flight_airlines_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_flight_airline_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/iv_flight_airlines_logo"
            app:layout_constraintLeft_toRightOf="@id/iv_flight_airlines_logo"
            app:layout_constraintStart_toEndOf="@id/iv_flight_airlines_logo"
            app:layout_constraintTop_toTopOf="@id/iv_flight_airlines_logo"
            app:typographyType="body_3"
            tools:text="AirAsia" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_flight_route_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_4"
            android:text="Detail"
            android:textColor="@color/Green_G500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_flight_route_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/Neutral_N500"
            app:layout_constraintTop_toBottomOf="@id/tv_flight_airline_name"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Jakarta (CGK) → London (LON)" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_flight_route_date_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintTop_toBottomOf="@id/tv_flight_route_name"
            app:typographyType="body_3"
            tools:text="Kam, 23 Des 19 • 06:00-18:00 (+1 hari)" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_refundable"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_flight_route_date_detail" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_refundable_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:textColor="@color/Neutral_N700_44"
            app:layout_constraintBottom_toBottomOf="@id/iv_refundable"
            app:layout_constraintLeft_toRightOf="@id/iv_refundable"
            app:layout_constraintStart_toEndOf="@id/iv_refundable"
            app:layout_constraintTop_toTopOf="@id/iv_refundable"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="Refundable" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_transit"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/iv_refundable"
            app:layout_constraintLeft_toRightOf="@id/tv_refundable_info"
            app:layout_constraintStart_toEndOf="@id/tv_refundable_info"
            app:layout_constraintTop_toTopOf="@id/iv_refundable" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_transit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:textColor="@color/Neutral_N700_44"
            app:layout_constraintBottom_toBottomOf="@id/iv_refundable"
            app:layout_constraintLeft_toRightOf="@id/iv_transit"
            app:layout_constraintStart_toEndOf="@id/iv_transit"
            app:layout_constraintTop_toTopOf="@id/iv_refundable"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="Langsung" />


    </android.support.constraint.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>