<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.White.Flight">
        <item name="popupTheme">@style/FlightPopupTheme</item>
    </style>

    <style name="FlightPopupTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ButtonRound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/bg_button_round</item>
    </style>

    <style name="FlightFilterLabelLayout" parent="LabelLayout">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ButtonRound.Success">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button_round_success</item>
    </style>

    <style name="FlightCalendarPicker" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/colorPrimary</item>
        <item name="android:weekNumberColor">@color/red_500</item>
        <item name="android:weekDayTextAppearance">@style/FlightCalendarPickerViewWeekDayView</item>
    </style>

    <style name="FlightCalendarPickerViewWeekDayView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font_black_primary_70</item>
    </style>

    <style name="CardWarningStyle">
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:background">@drawable/bg_card_warning</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="FlightChips">
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="FlightChips.Danger">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_flight_chip_danger</item>
        <item name="android:textColor">@color/flight_chips_danger_text</item>
    </style>

    <style name="FlightChips.Info">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_flight_chip_info</item>
        <item name="android:textColor">@color/flight_chips_info_text</item>
    </style>

    <style name="CardInsuranceDetail">
        <item name="android:background">@drawable/bg_flight_insurance_card_success</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="CardSuccessStatusStyle">
        <item name="android:background">@drawable/bg_card_success</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textColor">@color/tkpd_main_green</item>
    </style>

    <style name="CardFailedStatusStyle">
        <item name="android:background">@drawable/bg_card_failed</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="CardProcessStatusStyle">
        <item name="android:background">@drawable/bg_card_process</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textColor">#CA8600</item>
    </style>
  
    <style name="FlightProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/tkpd_main_green</item>
    </style>

    <style name="style_expandable_flight" parent="style_expandable_option_default">
        <item name="eo_header_style">@style/eo_header_style_flight</item>
        <item name="eo_text_option_style">@style/eo_text_option_style_flight</item>
    </style>

    <style name="style_expandable_flight.Bold" parent="style_expandable_option_default">
        <item name="eo_header_style">@style/eo_header_style_flight</item>
        <item name="eo_text_option_style">@style/eo_text_option_style_flight.Bold</item>
    </style>

    <style name="eo_header_style_flight" parent="eo_header_style">
        <item name="android:paddingBottom">@dimen/dp_20</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">@dimen/dp_20</item>
    </style>

    <style name="eo_text_option_style_flight" parent="TextView.TitleBig">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="eo_text_option_style_flight.Bold" parent="TextView.TitleBig.Bold">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="eo_header_style_flight_detail" parent="eo_header_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="eo_text_option_style_flight_detail" parent="TextView.TitleBig">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="style_expandable_flight_detail_order_title" parent="TextView.Title.Bold">
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Tabs.Secondary.Flight">
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="selectedBold">false</item>
        <item name="android:textStyle">normal</item>
        <item name="footerIndicatorHeight">3dp</item>
    </style>

    <style name="TextView.Micro.OrangeRed">
        <item name="android:textColor">@color/tkpd_main_orange</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Secondary.Green">
        <item name="android:background">@drawable/flight_bg_button_secondary_green</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/green_250</item>
    </style>

</resources>