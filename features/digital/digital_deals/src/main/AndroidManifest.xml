<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.digital_deals">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".view.activity.OpenBottomSheetActivity"></activity>
        <activity
            android:name=".view.activity.DealsHomeActivity"
            android:label="@string/title_activity_deals"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.DealsSearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.DealDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.CategoryDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.AllBrandsActivity"
            android:label="@string/title_activity_all_brands"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.activity.BrandDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.DealsLocationActivity"
            android:label="@string/title_activity_select_locations"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.CheckoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
    </application>

</manifest>