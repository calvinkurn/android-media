<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.digital_deals">

    <application
        android:allowBackup="true"
        android:label="@string/digital_deals"
        android:supportsRtl="true">
        <activity
            android:name=".view.activity.DealsHomeActivity"
            android:label="@string/title_activity_deals"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">

        <intent-filter android:autoVerify="true">
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="@string/host_deals"
                android:pathPattern="@string/path_deals_home"
                android:scheme="@string/internal_scheme" />
        </intent-filter>
    </activity>
    <activity
        android:name=".view.activity.DealsSearchActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".view.activity.DealDetailsActivity"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.White">
        <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <data
            android:host="@string/host_deals"
            android:pathPattern="@string/path_deals_detail"
            android:scheme="@string/internal_scheme" />
        </intent-filter>
    </activity>
    <activity
        android:name=".view.activity.CategoryDetailActivity"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.White">

        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="@string/host_deals"
                android:pathPattern="@string/path_deals_category"
                android:scheme="@string/internal_scheme" />
        </intent-filter>
    </activity>
    <activity
        android:name=".view.activity.AllBrandsActivity"
        android:label="@string/title_activity_all_brands"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.White"
        android:windowSoftInputMode="stateHidden">
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="@string/host_deals"
                android:pathPattern="@string/path_deals_all_brand"
                android:scheme="@string/internal_scheme" />
        </intent-filter>
    </activity>

    <activity
        android:name=".view.activity.BrandDetailsActivity"
        android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="@string/host_deals"
                android:pathPattern="@string/path_deals_brand_detail"
                android:scheme="@string/internal_scheme" />
        </intent-filter>
    </activity>

    <activity
        android:name=".view.activity.CheckoutActivity"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.White" />

</application>

    </manifest>