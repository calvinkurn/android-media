<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DealsToolbarTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">#f8f8f8</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppThemeDeals" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="MyTheme" parent="Base.MyTheme" />

    <style name="Base.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="MyTheme.Detail" parent="MyTheme" />

    <style name="ToolbarExpandedTitle">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:textColor">@color/black_39</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ToolbarExpandedTitle2">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:textColor">@color/black_39</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DealsTabLayoutTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="searchTextHiglight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>