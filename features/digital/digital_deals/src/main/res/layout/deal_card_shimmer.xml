<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_250"
    android:layout_height="@dimen/dp_150"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_72"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_shimmer_home_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@drawable/bg_shimmer_home_bg"
            app:layout_constraintRight_toLeftOf="@+id/iv_wish_list"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_deal_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_6"
            android:lines="1"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/bg_shimmer_home_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name" />


        <TextView
            android:id="@+id/tv_available_locations"
            style="@style/TextView.Micro.Black40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/ll_brand"
            app:layout_constraintRight_toLeftOf="@+id/tv_off"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            tools:text="Tersedia di 50 lokasi fgfg vgfg fgf gfgvgfgf fgfg fgf" />

        <TextView
            android:id="@+id/tv_off"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/bg_shimmer_home_bg"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_2"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@color/divider_color"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_available_locations" />

        <TextView
            android:id="@+id/tv_mrp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="center"
            android:background="@drawable/bg_shimmer_home_bg"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toRightOf="@+id/tv_off"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro"
            app:layout_constraintBottom_toTopOf="@+id/tv_sales_price" />

        <TextView
            android:id="@+id/tv_sales_price"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/bg_shimmer_home_bg"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/iv_wish_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            app:layout_constraintRight_toLeftOf="@+id/tv_wish_list"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_wish_list"
            style="@style/TextView.Micro.FontMedium.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@id/iv_wish_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_wish_list" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:padding="@dimen/dp_8"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toRightOf="@id/tv_wish_list"
            app:layout_constraintTop_toTopOf="@+id/tv_mrp"
            app:srcCompat="@drawable/ic_share_via_card" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

