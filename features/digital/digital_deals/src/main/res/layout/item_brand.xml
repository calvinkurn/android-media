<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/dp_24">

    <LinearLayout
        android:id="@+id/ll_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/background_brand_logo"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/image_brand_height"
            android:layout_height="@dimen/image_brand_height"
            android:layout_margin="@dimen/border_width"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_0">

            <ImageView
                android:id="@+id/iv_brand"
                android:layout_width="@dimen/image_brand_height"
                android:layout_height="@dimen/image_brand_height"
                android:scaleType="fitCenter" />
        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
