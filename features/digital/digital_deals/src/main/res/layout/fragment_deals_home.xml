<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottomnav_bg">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/base_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottomnav_bg"
        android:visibility="gone">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_1">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_search_view"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bottomnav_bg"
                android:visibility="gone"
                app:layout_scrollFlags="scroll|enterAlways">


                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_thinv"
                    android:background="@color/divider_color"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/search_input_view"
                    style="@style/TextView.Small.BlackPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_weight="1"
                    android:background="@drawable/rect_grey_search_background"
                    android:drawableLeft="@drawable/ic_search_grey_deal"
                    android:drawablePadding="@dimen/dp_4"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/search_input_hint_deals"
                    android:maxLines="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_location_name"
                    app:layout_constraintTop_toBottomOf="@+id/divider1" />


                <TextView
                    android:id="@+id/tv_location_name"
                    style="@style/TextView.Small.BlackPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:drawableLeft="@drawable/ic_location_2"
                    android:drawablePadding="@dimen/dp_8"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxWidth="@dimen/dp_100"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_8"
                    android:text="Surabayhjhhhhhhhhhhjhjhjhhghgha"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_banners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.tokopedia.digital_deals.view.customview.WrapContentHeightViewPager
                        android:id="@+id/deals_bannerpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <com.tokopedia.design.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/pager_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:padding="@dimen/dp_2"
                        app:centered="false"
                        app:fillColor="@color/green_250"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/deals_bannerpager"
                        app:pageColor="@color/grey_400"
                        app:radius="@dimen/dp_3"
                        app:strokeColor="@color/grey_400" />

                    <TextView
                        android:id="@+id/see_all_promo"
                        style="@style/TextView.Micro.Green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_16"
                        android:gravity="top"
                        android:text="@string/promo_button_text"
                        app:layout_constraintBottom_toBottomOf="@+id/pager_indicator"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/pager_indicator"
                        app:layout_constraintVertical_bias="0.5" />

                </android.support.constraint.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_popular_category"
                    style="@style/TextView.Title.FontMedium.BlackPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_24"
                    android:text="@string/category_voucher"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_banners" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_category_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/tv_popular_category"
                    app:spanCount="4"
                    tools:listitem="@layout/category_item" />


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_brands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/rv_category_items">

                    <TextView
                        android:id="@+id/tv_popular_brand"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_32"
                        android:text="@string/popular_brand"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <TextView
                        android:id="@+id/tv_see_all_brands"
                        style="@style/TextView.Micro.Green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:text="@string/see_all"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_popular_brand"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_popular_brand" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_brand_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/tv_popular_brand"
                        app:spanCount="4"
                        tools:listitem="@layout/item_brand" />

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_popular"
                    style="@style/TextView.Medium.FontMedium.BlackPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_16"
                    android:text="@string/text_trending_deals"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_brands" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_trending_deals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/tv_popular" />


                <LinearLayout
                    android:id="@+id/no_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_trending_deals">

                    <ImageView
                        android:layout_width="@dimen/dp_121"
                        android:layout_height="@dimen/dp_85"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/empty_search_illustration_big" />


                    <TextView
                        style="@style/TextView.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_horizontal"
                        android:text="@string/empty_deals_text"
                        android:textColor="@color/black_38" />

                </LinearLayout>


            </android.support.constraint.ConstraintLayout>


        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>