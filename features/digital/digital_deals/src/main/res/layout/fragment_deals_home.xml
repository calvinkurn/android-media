<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/base_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/dp_0">

            <android.support.v7.widget.Toolbar
                android:id="@+id/deals_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:contentInsetLeft="@dimen/dp_0"
                app:contentInsetStart="@dimen/dp_0"
                app:contentInsetStartWithNavigation="@dimen/dp_0"
                android:background="@color/white">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/backArraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_arrow_back_black"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_8"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/location_arrow_down"
                        android:text="Lokasi Deals"
                        android:gravity="center"
                        android:textColor="#7031353b"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/backArraw"/>

                    <TextView
                        android:id="@+id/tv_location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f531353b"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="top"
                        android:layout_marginLeft="@dimen/dp_8"
                        app:layout_constraintStart_toEndOf="@+id/backArraw"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar_title" />

                    <ImageView
                        android:id="@+id/overFlow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        app:srcCompat="@drawable/ic_three_dot_menu"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.Toolbar>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_search_view"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bottomnav_bg"
                android:visibility="gone"
                app:layout_scrollFlags="scroll|enterAlways">

                <TextView
                    android:id="@+id/search_input_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="@drawable/rect_grey_search_background"
                    android:drawableLeft="@drawable/ic_search_deal"
                    android:drawablePadding="@dimen/dp_4"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/search_input_hint_deals"
                    android:maxLines="1"
                    android:orientation="horizontal"
                    android:textColor="#ae31353b"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_search_view" />

            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/bg_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_blue_gradient"
                    app:layout_constraintTop_toTopOf="parent" >
                <LinearLayout
                    android:id="@+id/category_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_8"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent" />


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_brands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/category_items">

                    <TextView
                        android:id="@+id/tv_popular_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="@string/popular_brand"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"
                        android:textColor="#f531353b"
                        android:lineSpacingExtra="@dimen/sp_6"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_see_all_brands"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        android:text="@string/see_all"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#03ac0e"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_popular_brand"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_popular_brand" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_brand_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        android:layout_marginTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_16"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@+id/tv_popular_brand"
                        tools:listitem="@layout/item_brand_short" />

                </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_topDeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/bg_layout">

                    <TextView
                        android:id="@+id/tv_popular"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="@string/text_trending_deals"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"
                        android:textColor="#f531353b"
                        android:lineSpacingExtra="@dimen/sp_6"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tv_see_all_deals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/dp_16"
                        android:text="@string/see_all"
                        android:textSize="@dimen/sp_12"
                        android:padding="@dimen/dp_8"
                        android:textColor="#03ac0e"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_trending_deals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        app:layout_constraintTop_toBottomOf="@+id/tv_popular" />
                </android.support.constraint.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/no_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/cl_topDeals">

                    <ImageView
                        android:layout_width="@dimen/dp_121"
                        android:layout_height="@dimen/dp_85"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/empty_search_illustration_big" />


                    <TextView
                        style="@style/TextView.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_horizontal"
                        android:text="@string/empty_deals_text"
                        android:textColor="@color/black_38" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/curated_deals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/no_content" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_promos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/curated_deals">

                    <TextView
                        android:id="@+id/tv_promos"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_16"
                        android:textStyle="bold"
                        android:text="@string/text_trending_promos"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_trending_promos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:clipToPadding="false"
                        android:paddingBottom="@dimen/dp_12"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@+id/tv_promos" />
                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>


        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <include layout="@layout/activity_deals_home_shimmer" />
    </LinearLayout>

