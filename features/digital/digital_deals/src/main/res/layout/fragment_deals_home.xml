<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/base_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottomnav_bg"
            app:elevation="@dimen/dp_0">

            <android.support.v7.widget.Toolbar
                android:id="@+id/deals_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/white"
                app:contentInsetLeft="@dimen/dp_0"
                app:contentInsetStart="@dimen/dp_0"
                app:contentInsetStartWithNavigation="@dimen/dp_0">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/backArraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/toolbar_back_black" />

                    <LinearLayout
                        android:id="@+id/toolbar_home_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toRightOf="@+id/backArraw"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/toolbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center"
                            android:text="@string/deals_toolbar_title"
                            android:textColor="@color/toolbar_title_color"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_location_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="top"
                            android:textColor="@color/clr_f531353b"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:text="Jakarta"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar_title" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/overFlow_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_three_dot_menu" />


                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/search_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/rect_grey_search_background"
                android:drawablePadding="@dimen/dp_4"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/search_input_hint_deals"
                android:maxLines="1"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:textColor="@color/clr_ae31353b"
                android:textSize="@dimen/sp_16" />

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/bg_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_blue_gradient"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/category_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_8"
                        app:layout_constraintTop_toTopOf="parent" />


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cl_brands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/category_items">

                        <TextView
                            android:id="@+id/tv_popular_brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:lineSpacingExtra="@dimen/sp_6"
                            android:text="@string/popular_brand"
                            android:textColor="@color/clr_f531353b"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_see_all_brands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_8"
                            android:padding="@dimen/dp_8"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_12"
                            android:text="@string/see_all"
                            android:textColor="#03ac0e"
                            android:textSize="@dimen/sp_12"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_popular_brand"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_popular_brand" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_brand_items"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_16"
                            app:layout_constraintTop_toBottomOf="@+id/tv_popular_brand"
                            tools:listitem="@layout/item_brand_short" />

                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_topDeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/bg_layout">

                    <TextView
                        android:id="@+id/tv_popular"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="@dimen/sp_6"
                        android:text="@string/text_trending_deals"
                        android:textColor="@color/clr_f531353b"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tv_see_all_deals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        android:text="@string/see_all"
                        android:textColor="#03ac0e"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_popular" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_trending_deals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        app:layout_constraintTop_toBottomOf="@+id/tv_popular" />
                </android.support.constraint.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/no_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/cl_topDeals">

                    <ImageView
                        android:layout_width="@dimen/dp_121"
                        android:layout_height="@dimen/dp_85"
                        android:layout_gravity="center_horizontal"
                        app:srcCompat="@drawable/empty_search_illustration_big" />


                    <TextView
                        style="@style/TextView.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_horizontal"
                        android:text="@string/empty_deals_text"
                        android:textColor="@color/black_38" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/curated_deals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/no_content" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_promos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/curated_deals">

                    <TextView
                        android:id="@+id/tv_promos"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:fontFamily="sans-serif"
                        android:text="@string/text_trending_promos"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_trending_promos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="@dimen/dp_12"
                        app:layout_constraintTop_toBottomOf="@+id/tv_promos" />
                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>


        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:visibility="gone">

        <include layout="@layout/activity_deals_home_shimmer" />
    </LinearLayout>

