        tools:text="Bali" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@color/divider_color" />

</LinearLayout>