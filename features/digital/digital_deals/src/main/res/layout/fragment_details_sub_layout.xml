<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/deals_backgroud_color"
    android:visibility="gone">

    <TextView
        android:id="@+id/tv_deal_details"
        style="@style/TextView.Big.FontMedium.BlackPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5 Persons Package (Include 5 Main Dish, 3 Appetizer, Drinks)" />

    <TextView
        android:id="@+id/tv_mrp"
        style="@style/TextView.Micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="end"
        android:textColor="@color/black_38"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_deal_details"
        app:layout_goneMarginRight="@dimen/dp_16"
        tools:text="Rp40.000.000" />

    <TextView
        android:id="@+id/tv_sales_price"
        style="@style/TextView.Medium.FontMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_2"
        android:includeFontPadding="false"
        android:textColor="@color/red_800"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mrp"
        tools:text="Rp50.000.000" />

    <TextView
        android:id="@+id/tv_off"
        style="@style/TextView.Micro11.Bold.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/background_lightgreen_oval"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:textColor="@color/colorRed"
        app:layout_constraintBottom_toBottomOf="@+id/tv_mrp"
        app:layout_constraintLeft_toRightOf="@+id/tv_mrp"
        app:layout_constraintTop_toTopOf="@+id/tv_mrp"
        tools:text="20% OFF" />


    <ImageView
        android:id="@+id/iv_wish_list"
        android:layout_width="@dimen/image_width_24"
        android:layout_height="@dimen/image_width_24"
        android:layout_marginRight="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sales_price"
        app:layout_constraintRight_toLeftOf="@+id/tv_favourite"
        app:layout_constraintTop_toTopOf="@+id/tv_sales_price"
        app:srcCompat="@drawable/ic_wishlist_unfilled" />

    <TextView
        android:id="@+id/tv_favourite"
        style="@style/TextView.Micro.FontMedium.Black40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sales_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_sales_price"
        tools:text="5" />


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_sales_price" />


    <ImageView
        android:id="@+id/iv_clock"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:srcCompat="@drawable/ic_promo_valid_clock" />

    <TextView
        android:id="@+id/tv_expiry_date"
        style="@style/TextView.Small.BlackPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/iv_clock"
        app:layout_constraintLeft_toRightOf="@+id/iv_clock"
        app:layout_constraintTop_toTopOf="@+id/iv_clock"
        app:layout_constraintVertical_bias="0.5"
        tools:text="Berlaku hingga tanggal 1 Juni 2018" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_outlets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_clock">

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/divider_color"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_popular"
            style="@style/TextView.Medium.FontMedium.BlackPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/redeem_locations"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <TextView
            android:id="@+id/tv_number_of_locations"
            style="@style/TextView.Medium.FontMedium"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="@color/black_38"
            app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
            app:layout_constraintLeft_toRightOf="@+id/tv_popular"
            app:layout_constraintTop_toTopOf="@+id/tv_popular"
            app:layout_constraintVertical_bias="0.5"
            tools:text="(25)" />

        <TextView
            android:id="@+id/tv_see_all_locations"
            style="@style/TextView.Micro.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6sp"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="@string/see_all_locations"
            app:layout_constraintBottom_toBottomOf="@+id/tv_number_of_locations"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_number_of_locations" />

        <LinearLayout
            android:id="@+id/ll_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/background_brand_logo"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_popular">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_image_view"
                android:layout_width="@dimen/image_width_brand"
                android:layout_height="@dimen/image_width_brand"
                android:layout_margin="@dimen/border_width"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image_view_brand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_popular" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_brand_name"
            style="@style/TextView.Medium.FontMedium.BlackPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/ll_brand"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ll_brand"
            tools:text="Bakerzin" />

        <TextView
            android:id="@+id/tv_brand_venue"
            style="@style/TextView.Micro.FontMedium.BlackPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="@+id/tv_brand_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            tools:text="PIK Avenue - Food Hall" />

        <TextView
            android:id="@+id/tv_brand_address"
            style="@style/TextView.Micro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_2"
            android:maxLines="2"
            android:textColor="@color/black_38"
            app:layout_constraintLeft_toLeftOf="@+id/tv_brand_venue"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_venue"
            tools:text="PIK Avenue Ground Floor - B16, Jl. Pantai Indah Kapuk Boulevard, Kapuk Muara" />


        <TextView
            android:id="@+id/tv_view_map"
            style="@style/TextView.Micro.FontMedium.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:drawablePadding="@dimen/dp_8"
            android:text="@string/see_on_map"
            app:layout_constraintLeft_toLeftOf="@+id/tv_brand_address"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_address" />

    </android.support.constraint.ConstraintLayout>


    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/cl_outlets" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider3">

        <TextView
            android:id="@+id/tv_description"
            style="@style/TextView.Medium.FontMedium.BlackPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/show_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_expandable_description"
            style="@style/TextView.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="10"
            android:textColor="@color/expandable_text_color"
            app:layout_constraintLeft_toLeftOf="@+id/tv_description"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            tools:text="@string/bigcontent" />

        <TextView
            android:id="@+id/seemorebutton_description"
            style="@style/TextView.Micro.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/expand"
            app:layout_constraintLeft_toLeftOf="@+id/tv_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_expandable_description" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/grey_300"
            app:layout_constraintTop_toBottomOf="@+id/seemorebutton_description" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_tnc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_description">

        <TextView
            android:id="@+id/tv_tnc"
            style="@style/TextView.Medium.FontMedium.BlackPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/show_tnc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_expandable_tnc"
            style="@style/TextView.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="10"
            android:textColor="@color/expandable_text_color"
            app:layout_constraintLeft_toLeftOf="@+id/tv_tnc"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tnc"
            tools:text="@string/bigcontent" />


        <TextView
            android:id="@+id/seemorebutton_tnc"
            style="@style/TextView.Micro.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/expand"
            app:layout_constraintLeft_toLeftOf="@+id/tv_tnc"
            app:layout_constraintTop_toBottomOf="@+id/tv_expandable_tnc" />


        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/grey_300"
            app:layout_constraintTop_toBottomOf="@+id/seemorebutton_tnc" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_redeem_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/cl_tnc">

        <ImageView
            android:id="@+id/iv_how_to_redeem"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_how_to_redeem" />

        <TextView
            android:id="@+id/see_how_to_redeem_voucher"
            style="@style/TextView.Small.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="@string/see_how_to_redeem_voucher"
            app:layout_constraintBottom_toBottomOf="@+id/iv_how_to_redeem"
            app:layout_constraintLeft_toRightOf="@+id/iv_how_to_redeem"
            app:layout_constraintTop_toTopOf="@+id/iv_how_to_redeem" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_16"
            android:tint="@color/grey_400"
            app:layout_constraintBottom_toBottomOf="@+id/iv_how_to_redeem"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_how_to_redeem"
            app:srcCompat="@drawable/ic_arrow_right_deals" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/cl_redeem_instructions" />

    <TextView
        android:id="@+id/tv_recommended_deals"
        style="@style/TextView.Medium.FontMedium.BlackPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/recommended_deals"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recommended_deals"
        tools:listitem="@layout/deal_item_card_short" />


</android.support.constraint.ConstraintLayout>