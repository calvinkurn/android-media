<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/popular_loc_img"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/ic_add_photo"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:textColor="@color/clr_f531353b"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toLeftOf="@+id/location_type"
        app:layout_constraintLeft_toRightOf="@+id/popular_loc_img"
        tools:text="Monumen Nasional"/>

    <TextView
        android:id="@+id/location_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#7031353b"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintRight_toLeftOf="@+id/location_type"
        app:layout_constraintLeft_toRightOf="@+id/popular_loc_img"
        app:layout_constraintTop_toBottomOf="@+id/location_name"
        android:text="Setiabudi, Karet Kuningan, Jakarta Selatan, DKI Jakarta"/>


    <TextView
        android:id="@+id/location_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:padding="@dimen/dp_8"
        android:visibility="gone"
        android:textColor="#7031353b"
        android:textSize="@dimen/sp_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rect_grey_loc_type_background"
        tools:text="Landmark"
        tools:visibility="visible"/>

</android.support.constraint.ConstraintLayout>