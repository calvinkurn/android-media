<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/new_margin_sm">

    <ImageView
        android:id="@+id/imageViewCatItem"
        android:layout_width="@dimen/image_width_ll"
        android:layout_height="@dimen/image_width_ll"
        android:background="@drawable/background_green_oval"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textViewCatItem"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_margin_small"
        android:gravity="center"
        android:singleLine="true"
        android:text="Makanan"
        android:textColor="@color/black_39"
        android:textSize="@dimen/font_micro"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCatItem" />
</android.support.constraint.ConstraintLayout><!--android:layout_marginRight="@dimen/new_margin_med"-->
