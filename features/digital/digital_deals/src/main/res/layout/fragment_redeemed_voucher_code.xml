    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_med"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />


    <TextView
        android:id="@+id/tv_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:padding="@dimen/new_margin_med"
        android:text="Selamat, Penukaran voucher berhasil dilakukan!"
        android:textColor="@color/black_39"
        android:textSize="@dimen/text_size_17"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/dash_line_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_congrats" />

    <com.tokopedia.core.customView.RoundedCornerImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_width_brand"
        android:layout_height="@dimen/image_width_brand"
        android:layout_marginBottom="@dimen/new_margin_small"
        android:layout_marginLeft="@dimen/margin_small"

        android:layout_marginTop="@dimen/new_margin_small"
        android:background="@color/card_loading_color"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />


    <TextView
        android:id="@+id/tv_deal_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="@dimen/font_line_spacing_nano"
        android:maxLines="2"
        android:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)"
        android:textColor="@color/black_39"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginTop="@dimen/new_margin_small"
        android:fontFamily="sans-serif"
        android:text="Bakerzin"
        android:textColor="@color/black_40"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/tv_redeem_locations"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_redeem_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginTop="@dimen/new_margin_tiny"
        android:fontFamily="sans-serif"
        android:text="Dapat ditukar di "
        android:textColor="@color/black_40"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />


    <TextView
        android:id="@+id/tv_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_margin_med"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Kode Voucher"
        android:textColor="@color/black_40"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <TextView
        android:id="@+id/tv_voucher_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_margin_small"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:letterSpacing="0.05"
        android:text="112233445566"
        android:textColor="@color/green_nob"
        android:textSize="@dimen/text_size_xlarge"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_voucher" />

    <TextView
        android:id="@+id/tv_redeem_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_margin_small"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Waktu Redeem: 12 April 2018 - 03:50 PM"
        android:textColor="@color/black_40"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        android:layout_marginBottom="@dimen/margin_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tv_voucher_code" />


</android.support.constraint.ConstraintLayout>

