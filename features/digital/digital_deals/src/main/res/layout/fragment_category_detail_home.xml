<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bottomnav_bg">


    <android.support.design.widget.CoordinatorLayout

        android:id="@+id/base_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottomnav_bg"
        android:visibility="gone">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bottomnav_bg"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <TextView
                    android:id="@+id/tv_popular_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_24"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/featured_brand"
                    android:textColor="@color/black_39"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="@string/see_all"
                    android:textColor="@color/green_nob"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_popular_brand"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_popular_brand" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_brands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/tv_popular_brand"
                    app:spanCount="4"
                    tools:listitem="@layout/item_brand" />


                <TextView
                    android:id="@+id/tv_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black_39"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_brands"
                    tools:text="Populer di Jakarta " />

                <TextView
                    android:id="@+id/number_of_locations"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
                    app:layout_constraintLeft_toRightOf="@+id/tv_popular"
                    app:layout_constraintTop_toTopOf="@+id/tv_popular"
                    app:layout_constraintVertical_bias="0.5"
                    tools:text="(23)" />
            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_deals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toBottomOf="@id/number_of_locations"
            tools:listitem="@layout/deals_item_card" />



    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>