<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bottomnav_bg">


    <android.support.design.widget.CoordinatorLayout

        android:id="@+id/base_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottomnav_bg"
        android:visibility="gone">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bottomnav_bg"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_brands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_popular_brand"
                        style="@style/TextView.Medium.FontMedium.BlackPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_24"
                        android:text="@string/popular_brand"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_see_all"
                        style="@style/TextView.Micro.Green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text="@string/see_all"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_popular_brand"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_popular_brand" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_brands"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/tv_popular_brand"
                        app:spanCount="4"
                        tools:listitem="@layout/item_brand_short" />
                </android.support.constraint.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_popular"
                    style="@style/TextView.Medium.FontMedium.BlackPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_brands"
                    tools:text="Populer di Jakarta " />

                <TextView
                    android:id="@+id/number_of_locations"
                    style="@style/TextView.Medium.FontMedium.BlackPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textColor="@color/black_38"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
                    app:layout_constraintLeft_toRightOf="@+id/tv_popular"
                    app:layout_constraintTop_toTopOf="@+id/tv_popular"
                    app:layout_constraintVertical_bias="0.5"
                    tools:text="(23)" />
            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.AppBarLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_deals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="@dimen/dp_16"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/deal_item_card" />

        <ScrollView
            android:id="@+id/scroll_view_no_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/no_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_121"
                    android:layout_height="@dimen/dp_85"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/empty_search_illustration_big" />


                <TextView
                    style="@style/TextView.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_horizontal"
                    android:text="@string/empty_deals_text"
                    android:textColor="@color/black_38" />

            </LinearLayout>
        </ScrollView>


    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>