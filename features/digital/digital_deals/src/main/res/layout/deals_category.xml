<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.abstraction.base.view.widget.TouchViewPager
        android:id="@+id/deals_bannerpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height_deals" />


    <com.tokopedia.design.viewpagerindicator.CirclePageIndicator
        android:id="@+id/pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_12"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="@dimen/dp_2"
        app:centered="false"
        app:fillColor="@color/green_nob"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deals_bannerpager"
        app:pageColor="@color/grey_400"
        app:radius="@dimen/dp_4"
        app:strokeColor="@color/grey_400" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="top"
        android:text="@string/promo_button_text"
        android:textColor="@color/green_nob"
        android:textStyle="normal"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/pager_indicator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pager_indicator"
        app:layout_constraintVertical_bias="0.5" />


    <TextView
        android:id="@+id/tv_featured_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:fontFamily="sans-serif-medium"
        android:text="Kategori Voucher"
        android:textColor="@color/black_39"
        android:textSize="@dimen/font_medium"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@+id/pager_indicator"
        app:layout_constraintTop_toBottomOf="@+id/pager_indicator" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewCatItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:spanCount="4"
        android:layout_marginTop="@dimen/dp_16"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/tv_featured_brand"
        tools:listitem="@layout/category_item" />


</android.support.constraint.ConstraintLayout>

