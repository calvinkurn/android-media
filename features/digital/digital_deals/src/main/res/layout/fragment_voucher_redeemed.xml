<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_16">

        <com.tokopedia.digital_deals.view.customview.CustomTicketView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:borderColor="@color/colorAccent"
            app:borderWidth="1dp"
            app:cornerRadius="4dp"
            app:cornerType="roundedscallop"
            app:layout_constraintBottom_toTopOf="@+id/divider1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:scallopRadius="8dp"
            app:showBorder="false"
            app:showTopShadow="true"
            app:ticketElevation="4dp" />

        <com.tokopedia.digital_deals.view.customview.CustomTicketView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:borderColor="@color/colorAccent"
            app:borderWidth="1dp"
            app:cornerRadius="4dp"
            app:cornerType="scalloprounded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            app:scallopRadius="8dp"
            app:showBorder="false"
            app:showBottomShadow="true"
            app:showTopShadow="true"
            app:ticketElevation="4dp" />

        <!--v.setLayerType(View.LAYER_TYPE_SOFTWARE, null);-->

        <ImageView
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/dash_line_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <TextView
            android:id="@+id/tv_congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5sp"
            android:padding="@dimen/dp_16"
            android:text="Selamat, Penukaran voucher berhasil dilakukan!"
            android:textColor="@color/black_39"
            android:textSize="@dimen/sp_17"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent" />

        <!--v.setLayerType(View.LAYER_TYPE_SOFTWARE, null);, if doesn't workthen use android:srcCompat-->

        <ImageView
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/dash_line_grey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_congrats" />

        <com.tokopedia.core.customView.RoundedCornerImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_width_brand"
            android:layout_height="@dimen/image_width_brand"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/grey_1100"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />


        <TextView
            android:id="@+id/tv_deal_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:fontFamily="sans-serif-medium"

            android:maxLines="2"
            android:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)"
            android:textColor="@color/black_39"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="sans-serif"
            android:text="Bakerzin"
            android:textColor="@color/black_40"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/tv_redeem_locations"
            app:layout_constraintLeft_toRightOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_redeem_locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:fontFamily="sans-serif"
            android:text="Dapat ditukar di "
            android:textColor="@color/black_40"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintLeft_toRightOf="@+id/imageView" />


        <TextView
            android:id="@+id/tv_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Kode Voucher"
            android:textColor="@color/black_40"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1" />

        <TextView
            android:id="@+id/tv_voucher_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.05"
            android:text="112233445566"
            android:textColor="@color/green_nob"
            android:textSize="@dimen/sp_20"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_voucher" />

        <TextView
            android:id="@+id/tv_redeem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Waktu Redeem: 12 April 2018 - 03:50 PM"
            android:textColor="@color/black_40"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/tv_voucher_code" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@+id/cl_parent"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"

        android:textColor="@color/black_40"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center_horizontal"
        android:text="Kode Voucher hanya dapat dipakai untuk satu kali transaksi, dan Voucher Anda akan otomatis di-non-aktif-kan oleh sistem setelah digunakan."
        />

</android.support.constraint.ConstraintLayout>
