<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_16">


    <com.tokopedia.digital_deals.view.customview.ExpandableTextView
        android:id="@+id/tv_expandable_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="3"
        android:textColor="@color/expandable_text_color"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        app:animation_duration="300"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/bigcontent" />


    <TextView
        android:id="@+id/seemorebutton_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/expand"
        android:textColor="@color/green_250"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_expandable_description" />


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/seemorebutton_description" />

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_1100"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <TextView
        android:id="@+id/tv_available_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:fontFamily="sans-serif"
        android:text="@string/terdapat_di"
        android:textColor="@color/black_39"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map"
        app:layout_constraintLeft_toRightOf="@+id/iv_map"
        app:layout_constraintTop_toTopOf="@+id/iv_map"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_number_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/black_39"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map"
        app:layout_constraintLeft_toRightOf="@id/tv_available_locations"
        app:layout_constraintTop_toTopOf="@+id/iv_map"
        app:layout_constraintVertical_bias="0.5"
        tools:text="3 kota" />


    <ImageView
        android:id="@+id/right_arrow_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:tint="@color/grey_400"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_map"
        app:srcCompat="@drawable/ic_arrow_right_default" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/divider_color"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/iv_map" />

    <TextView
        android:id="@+id/tv_popular"
        style="@style/TextView.Medium.FontMedium.BlackPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/number_of_locations"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        tools:text="Populer di Jakarta " />

    <TextView
        android:id="@+id/number_of_locations"
        style="@style/TextView.Medium.FontMedium.BlackPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_32"
        android:textColor="@color/black_38"
        android:gravity="left"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintLeft_toRightOf="@+id/tv_popular"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        tools:text="(23)" />

</android.support.constraint.ConstraintLayout>