<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/deals_backgroud_color">

    <TextView
        android:id="@+id/tv_dealDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2sp"
        android:text="5 Persons Package (Include 5 Main Dish, 3 Appetizer, Drinks)"
        android:textColor="@color/black_39"
        android:textSize="@dimen/font_deal_detail20"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif"
        android:gravity="end"
        android:text="Rp40.000.000"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dealDetails"
        app:layout_goneMarginRight="@dimen/dp_16" />

    <TextView
        android:id="@+id/tvSalesPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/margin_vvvs"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        android:text="Rp50.000.000"
        android:textColor="@color/red_800"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMrp" />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@drawable/background_green_oval"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="2dp"
        android:text="DISKON 10%"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvSalesPrice"
        app:layout_constraintLeft_toRightOf="@+id/tvSalesPrice"
        app:layout_constraintTop_toTopOf="@+id/tvSalesPrice" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/linear_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/rect_grey_corners"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSalesPrice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSalesPrice">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintVertical_bias="0.70"
            android:background="@color/card_loading_color"
            app:layout_constraintBottom_toBottomOf="@+id/tv_days_left"
            app:layout_constraintTop_toTopOf="@+id/tv_days_left" />

        <TextView
            android:id="@+id/tv_days_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_8"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_image"
            android:text="123 Hari Lagi"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_11"
            android:textStyle="normal" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout1" />


    <ImageView
        android:id="@+id/iv_clock"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/card_loading_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <TextView
        android:id="@+id/tv_expiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:fontFamily="sans-serif"
        android:text="Berlaku hingga tanggal 1 Juni 2018"
        android:textColor="@color/black_39"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"

        app:layout_constraintBottom_toBottomOf="@+id/iv_clock"
        app:layout_constraintLeft_toRightOf="@+id/iv_clock"
        app:layout_constraintTop_toTopOf="@+id/iv_clock"
        app:layout_constraintVertical_bias="0.5" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/iv_clock" />

    <TextView
        android:id="@+id/tv_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:text="Lokasi Redeem "
        android:textColor="@color/black_39"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/number_of_locations"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:text="(25)"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
        app:layout_constraintLeft_toRightOf="@+id/tv_popular"
        app:layout_constraintTop_toTopOf="@+id/tv_popular"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_findalllocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:text="Lihat Semua Lokasi"
        android:textColor="@color/green_nob"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/number_of_locations"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/number_of_locations" />


    <android.support.v7.widget.CardView
        android:id="@+id/cv_imageView"
        android:layout_width="@dimen/image_width_brand"
        android:layout_height="@dimen/image_width_brand"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:cardCornerRadius="@dimen/card_corner_deals_item"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_popular">

        <ImageView
            android:id="@+id/imageViewBrand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_loading_color"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_popular" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_deal_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:text="Bakerzin"
        android:textColor="@color/black_39"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/cv_imageView"
        app:layout_constraintTop_toTopOf="@+id/cv_imageView" />

    <TextView
        android:id="@+id/tv_brandVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:fontFamily="sans-serif-medium"
        android:text="PIK Avenue - Food Hall"
        android:textColor="@color/black_39"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_deal_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_deal_details" />

    <TextView
        android:id="@+id/tv_brandAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/margin_vvvs"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:text="PIK Avenue Ground Floor - B16, Jl. Pantai Indah Kapuk Boulevard, Kapuk Muara"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_brandVenue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_brandVenue" />

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="@dimen/image_width_18"
        android:layout_height="@dimen/image_width_18"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/card_loading_color"
        app:layout_constraintLeft_toLeftOf="@+id/tv_brandAddress"
        app:layout_constraintTop_toBottomOf="@+id/tv_brandAddress" />

    <TextView
        android:id="@+id/tv_view_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:fontFamily="sans-serif-medium"
        android:text="Lihat Peta"
        android:textColor="@color/green_nob"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map"
        app:layout_constraintLeft_toRightOf="@+id/iv_map"
        app:layout_constraintTop_toTopOf="@+id/iv_map" />


    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/iv_map" />


    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:text="@string/show_description"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider3" />

    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/tv_expandable_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="3"
        android:text="@string/bigcontent"
        android:textColor="@color/expandable_text_color"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"

        app:animation_duration="300"
        app:layout_constraintLeft_toLeftOf="@+id/tv_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

    <LinearLayout
        android:id="@+id/expand_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_expandable_description">

        <TextView
            android:id="@+id/seemorebutton_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/expand"
            android:textColor="@color/green_nob"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/down_arrow_description"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/sp_12"
            android:tint="@color/green_nob"
            app:srcCompat="@drawable/ic_arrow_down" />
    </LinearLayout>


    <View

        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/expand_view_description" />


    <TextView
        android:id="@+id/tv_tnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:text="@string/show_tnc"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4" />

    <at.blogc.android.views.ExpandableTextView
        android:id="@+id/tv_expandable_tnc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="3"
        android:text="@string/bigcontent"
        android:textColor="@color/expandable_text_color"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        app:animation_duration="300"
        app:layout_constraintLeft_toLeftOf="@+id/tv_tnc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tnc" />

    <LinearLayout
        android:id="@+id/expand_view_tnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_tnc"
        app:layout_constraintTop_toBottomOf="@+id/tv_expandable_tnc">

        <TextView
            android:id="@+id/seemorebutton_tnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="sans-serif"
            android:text="@string/expand"
            android:textColor="@color/green_nob"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/down_arrow_tnc"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/sp_12"
            android:tint="@color/green_nob"
            app:srcCompat="@drawable/ic_arrow_down" />
    </LinearLayout>


    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/expand_view_tnc" />

    <TextView
        android:id="@+id/tv_recommended_deals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:text="@string/recommended_deals"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider5" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:nestedScrollingEnabled="false"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_recommended_deals"
        tools:listitem="@layout/deal_item_card_short" />


</android.support.constraint.ConstraintLayout>