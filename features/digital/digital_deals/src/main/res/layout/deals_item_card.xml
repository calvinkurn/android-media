<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/new_margin_med"
    android:layout_marginLeft="@dimen/margin_default"
    android:layout_marginRight="@dimen/margin_default"
    app:cardCornerRadius="@dimen/card_corner_deals_item"

    app:cardElevation="4dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_ms">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_width_deal"
                android:scaleType="fitXY"
                android:src="@color/card_loading_color"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/tv_sold_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:layout_marginRight="-2dp"
                    android:background="@drawable/details_header_background"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="7dp"
                    android:paddingLeft="@dimen/padding_ms"
                    android:paddingRight="10dp"
                    android:paddingTop="@dimen/padding_vs"
                    android:text="Terjual 150 kali"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_micro"
                    android:textStyle="normal" />

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_deal_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/new_margin_small"
            android:layout_marginRight="@dimen/new_margin_small"
            android:layout_marginTop="@dimen/new_margin_small"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="@dimen/font_line_spacing_nano"
            android:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)"
            android:textColor="@color/black_39"
            android:textSize="@dimen/font_small"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_deal" />

        <TextView
            android:id="@+id/tv_days_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/new_margin_small"
            android:layout_marginTop="@dimen/new_margin_small"
            android:fontFamily="sans-serif"
            android:text="123 Hari Lagi"
            android:textColor="@color/black_38"
            android:textSize="@dimen/font_tiny"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro" />


        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/new_margin_small"
            android:background="@drawable/background_lightgreen_oval"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="DISKON 10%"
            android:textColor="@color/green_nob"
            android:textSize="@dimen/font_tiny"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_days_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_days_left" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:layout_marginLeft="@dimen/new_margin_small"
            android:layout_marginRight="@dimen/new_margin_small"
            android:layout_marginTop="@dimen/new_margin_small"
            android:background="@color/divider_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_days_left" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_brand"
            android:layout_width="@dimen/image_width_brand_deals_card"
            android:layout_height="@dimen/image_width_brand_deals_card"
            android:layout_marginLeft="@dimen/new_margin_small"
            android:layout_marginTop="@dimen/new_margin_small"
            app:cardCornerRadius="@dimen/card_corner_deals_item"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <ImageView
                android:id="@+id/iv_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_loading_color"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/new_margin_small"
            android:layout_marginRight="@dimen/new_margin_tiny"
            android:fontFamily="sans-serif"
            android:text="Bakerzin"
            android:textColor="@color/black_38"
            android:textSize="@dimen/font_micro"
            android:textStyle="normal"
            app:layout_constraintLeft_toRightOf="@+id/cv_brand"
            app:layout_constraintRight_toLeftOf="@+id/tv_Mrp"
            app:layout_constraintTop_toTopOf="@+id/tv_Mrp" />


        <TextView
            android:id="@+id/tv_Mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/new_margin_small"
            android:layout_marginTop="14dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="Rp50.000.000"
            android:textColor="@color/black_38"
            android:textSize="@dimen/font_micro"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/tv_available_locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_margin_tiny"
            android:fontFamily="sans-serif"
            android:text="Tersedia di 50 lokasi"
            android:textColor="@color/black_38"
            android:textSize="@dimen/font_micro"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@+id/tv_brand_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name" />

        <TextView
            android:id="@+id/tv_salesPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/new_margin_small"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="Rp40.000.000"
            android:textColor="@color/red_800"
            android:textSize="@dimen/font_medium"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_available_locations" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

