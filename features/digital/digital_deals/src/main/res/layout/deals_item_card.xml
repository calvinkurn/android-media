<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    app:cardCornerRadius="@dimen/card_corner_deals_item"
    app:cardElevation="4dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_width_deal"
            android:scaleType="fitXY"

            android:src="@color/card_loading_color"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_hot_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/details_header_background"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_3"

            android:text="@string/hot_deal"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_deal_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)"
            android:textColor="@color/black_39"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <android.support.v7.widget.CardView
            android:id="@+id/cv_brand"
            android:layout_width="@dimen/image_width_brand_deals_card"
            android:layout_height="@dimen/image_width_brand_deals_card"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            app:cardCornerRadius="@dimen/card_corner_deals_item"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro">

            <ImageView
                android:id="@+id/iv_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_loading_color"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_4"
            android:fontFamily="sans-serif"
            android:text="Bakerzin"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/tv_available_locations"
            app:layout_constraintLeft_toRightOf="@+id/cv_brand" />


        <TextView
            android:id="@+id/tv_available_locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:fontFamily="sans-serif"
            android:text="Tersedia di 50 lokasi"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/cv_brand"
            app:layout_constraintLeft_toLeftOf="@+id/tv_brand_name" />

        <TextView
            android:id="@+id/tv_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/background_lightgreen_oval"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:text="20% OFF"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_11"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/cv_brand"
            app:layout_constraintRight_toRightOf="parent" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/divider_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_brand" />

        <TextView
            android:id="@+id/tv_Mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text="Rp50.000.000"
            android:textColor="@color/black_40"
            android:textSize="@dimen/sp_10"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/tv_salesPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:text="Rp40.000.000"
            android:textColor="@color/red_800"
            android:textSize="@dimen/sp_17"
            android:textStyle="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Mrp" />

        <ImageView
            android:id="@+id/iv_wish_list"
            android:layout_width="@dimen/image_width_24"
            android:layout_height="@dimen/image_width_24"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_Mrp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_salesPrice"
            app:srcCompat="@drawable/ic_wishlist_unfilled" />

        <TextView
            android:id="@+id/tv_wish_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black_40"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/iv_wish_list"
            app:layout_constraintLeft_toRightOf="@+id/iv_wish_list"
            app:layout_constraintTop_toTopOf="@+id/iv_wish_list"
            tools:text="5" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/image_width_24"
            android:layout_height="@dimen/image_width_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="@+id/tv_Mrp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_salesPrice"
            app:layout_constraintLeft_toRightOf="@id/tv_wish_list"
            app:srcCompat="@drawable/ic_share_via" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

