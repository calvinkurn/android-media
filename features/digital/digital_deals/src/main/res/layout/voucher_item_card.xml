<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    >

    <com.tokopedia.digital_deals.view.customview.CustomTicketView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:borderColor="@color/colorAccent"
        app:borderWidth="1dp"
        app:cornerRadius="4dp"
        app:cornerType="roundedscallop"
        app:layout_constraintBottom_toTopOf="@+id/divider1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scallopRadius="8dp"
        app:showBorder="false"
        app:showTopShadow="true"
        app:ticketElevation="4dp" />

    <com.tokopedia.digital_deals.view.customview.CustomTicketView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:borderColor="@color/colorAccent"
        app:borderWidth="1dp"
        app:cornerRadius="4dp"
        app:cornerType="scalloprounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:scallopRadius="8dp"
        app:showBorder="false"
        app:showBottomShadow="true"
        app:ticketElevation="4dp"/>


    <!--v.setLayerType(View.LAYER_TYPE_SOFTWARE, null);-->
    <ImageView
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/dash_line_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />




    <com.tokopedia.core.customView.RoundedCornerImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_width_brand"
        android:layout_height="@dimen/image_width_brand"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="@color/grey_1100"
        android:layout_marginTop="@dimen/dp_16"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />


    <TextView
        android:id="@+id/tv_deal_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/margin_small"
        android:fontFamily="sans-serif-medium"

        android:maxLines="2"
        android:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)"
        android:textColor="@color/black_39"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:fontFamily="sans-serif"
        android:text="Bakerzin"
        android:textColor="@color/black_40"
        android:textSize="@dimen/dp_12"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/tv_redeem_locations"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_redeem_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:fontFamily="sans-serif"
        android:text="Dapat ditukar di "
        android:textColor="@color/black_40"
        android:textSize="@dimen/dp_12"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />


    <LinearLayout
        android:id="@+id/ll_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/rect_grey"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1">

        <TextView
            android:id="@+id/tv_valid_till"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Berlaku hingga "
            android:textColor="@color/black_39"
            android:textSize="@dimen/dp_12"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_valid_till_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="15 April 2018"
            android:textColor="@color/black_39"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_redeem_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/rect_yellow"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8"
        android:text="Redeem hanya dapat dilakukan oleh petugas outlet terkait"
        android:textColor="@color/black_40"
        android:textSize="@dimen/dp_12"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_valid"
        app:layout_constraintWidth_default="wrap" />


    <TextView
        android:id="@+id/tv_redeem_voucher"
        android:layout_width="0dp"
        android:layout_height="@dimen/redeem_button_height"
        android:background="@drawable/background_redeem_voucher"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:lineSpacingExtra="10sp"
        android:text="Redeem Voucher"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/tv_redeem_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

