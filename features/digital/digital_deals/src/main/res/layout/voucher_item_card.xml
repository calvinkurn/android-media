    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_med"
        android:layout_marginRight="@dimen/new_margin_med"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />


    <com.tokopedia.core.customView.RoundedCornerImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_width_brand"
        android:layout_height="@dimen/image_width_brand"
        android:layout_marginBottom="@dimen/new_margin_small"
        android:layout_marginLeft="@dimen/margin_small"

        android:layout_marginTop="@dimen/new_margin_small"
        android:background="@color/card_loading_color"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_deal_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="@dimen/font_line_spacing_nano"
        android:maxLines="2"
        android:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)"
        android:textColor="@color/black_39"
        android:textSize="@dimen/font_small"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginTop="@dimen/new_margin_small"
        android:fontFamily="sans-serif"
        android:text="Bakerzin"
        android:textColor="@color/black_40"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/tv_redeem_locations"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_redeem_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_margin_small"
        android:layout_marginTop="@dimen/new_margin_tiny"
        android:fontFamily="sans-serif"
        android:text="Dapat ditukar di "
        android:textColor="@color/black_40"
        android:textSize="@dimen/font_micro"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toRightOf="@+id/imageView" />


    <LinearLayout
        android:id="@+id/ll_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_margin_small"
        android:background="@drawable/rect_grey"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/new_margin_small"
        android:paddingLeft="@dimen/new_margin_medsmall"
        android:paddingRight="@dimen/new_margin_medsmall"
        android:paddingTop="@dimen/new_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <TextView
            android:id="@+id/tv_valid_till"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="Berlaku hingga "
            android:textColor="@color/black_39"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_valid_till_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="15 April 2018"
            android:textColor="@color/black_39"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_redeem_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/new_margin_small"
        android:background="@drawable/rect_yellow"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/new_margin_small"
        android:paddingLeft="@dimen/new_margin_medsmall"
        android:paddingRight="@dimen/new_margin_medsmall"
        android:paddingTop="@dimen/new_margin_small"
        android:text="Redeem hanya dapat dilakukan oleh petugas outlet terkait"
        android:textColor="@color/black_40"
        android:textSize="@dimen/text_size_small"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_valid"
        app:layout_constraintWidth_default="wrap" />


    <TextView
        android:id="@+id/tv_redeem_voucher"
        android:layout_width="0dp"
        android:layout_height="@dimen/redeem_button_height"
        android:background="@drawable/background_redeem_voucher"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:lineSpacingExtra="10sp"
        android:text="Redeem Voucher"
        android:layout_marginTop="@dimen/new_margin_small"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/tv_redeem_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

