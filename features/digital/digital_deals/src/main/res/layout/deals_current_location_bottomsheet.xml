<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/location_cross_icon_bottomsheet"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@null"
        app:srcCompat="@drawable/ic_close_default" />

    <ImageView
        android:id="@+id/deals_img_select_location"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_150"
        app:layout_constraintTop_toBottomOf="@+id/cross_icon_bottomsheet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_24"
        app:srcCompat="@drawable/ic_location_settings"/>


    <TextView
        android:id="@+id/deals_text_select_location_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/deal_product_text_color"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="6sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintTop_toBottomOf="@+id/deals_img_select_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/deals_use_open_location_text_1"
        />


    <TextView
        android:id="@+id/deals_text_select_location_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/clr_ae31353b"
        android:lineSpacingExtra="6sp"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        app:layout_constraintTop_toBottomOf="@+id/deals_text_select_location_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:text="@string/deals_use_open_location_text_2"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/goto_location_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unifyButtonType="main"
        app:unifyButtonSize="large"
        android:text="Beri Akses Lokasi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deals_text_select_location_2"
        android:textSize="@dimen/sp_14"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

</androidx.constraintlayout.widget.ConstraintLayout>