<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/img_loc"
        android:layout_width="@dimen/dp_40"
        android:layout_height="40dp"
        android:src="@drawable/popluat_loc_img_bg"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageView
        android:id="@+id/loc_name"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/img_loc"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_shimmer_home_bg" />

    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintLeft_toRightOf="@+id/img_loc"
        app:layout_constraintTop_toBottomOf="@+id/loc_name"
        android:background="@drawable/bg_shimmer_home_bg" />

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_shimmer_home_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>