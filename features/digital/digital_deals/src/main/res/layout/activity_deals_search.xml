<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:minHeight="56dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottomnav_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/new_margin_med"
                android:tint="@color/toolbar_home"
                app:srcCompat="@drawable/ic_action_back" />

            <com.tokopedia.digital_deals.view.customview.SearchInputView
                android:id="@+id/search_input_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/searchview_height"
                android:layout_marginBottom="@dimen/new_margin_small"

                android:layout_marginLeft="@dimen/new_margin_med"
                android:layout_marginRight="@dimen/new_margin_med"
                android:layout_marginTop="@dimen/new_margin_small" />
        </LinearLayout>


    </android.support.v7.widget.Toolbar>


    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/htab_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bottomnav_bg"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_scrollFlags="scroll|enterAlways|exitUntilCollapsed"
                app:titleEnabled="false">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/bottomnav_bg">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bottomnav_bg"
                        android:paddingBottom="@dimen/new_margin_med"
                        app:layout_collapseMode="none">

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divider_height_thin"
                            android:background="@color/divider_color" />

                        <TextView
                            android:id="@+id/tv_popular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/new_margin_med"
                            android:layout_marginTop="@dimen/new_margin_med"
                            android:fontFamily="sans-serif-medium"
                            android:text="Jakarta"
                            android:textColor="@color/black_39"
                            android:textSize="@dimen/font_medium"
                            android:textStyle="normal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/divider" />

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/new_margin_med"
                            android:fontFamily="sans-serif-medium"
                            android:text="Ubah Lokasi"
                            android:textColor="@color/medium_green"
                            android:textSize="@dimen/font_micro"
                            android:textStyle="normal"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_popular"
                            app:layout_constraintVertical_bias="0.5" />

                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>


            </android.support.design.widget.CollapsingToolbarLayout>


        </android.support.design.widget.AppBarLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_search_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/new_margin_med"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_topevents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <TextView
                android:id="@+id/tv_topevents"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/margin_default"
                android:paddingStart="@dimen/margin_default"
                android:text="@string/trending_deals"
                android:textColor="@color/black_38"
                android:textSize="@dimen/font_micro"
                android:textStyle="normal" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_top_events_suggestions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </LinearLayout>


        <com.tokopedia.design.button.BottomActionView
            android:id="@+id/bottom_action_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/padding_med"
            app:bav_1_display="true"
            app:bav_2_display="true"
            app:bav_icon_1="@drawable/ic_search_sort"
            app:bav_icon_2="@drawable/ic_search_filter"
            app:bav_label_1="@string/search_sort_label"
            app:bav_label_2="@string/search_filter_label"
            app:layout_behavior="com.tokopedia.digital_deals.view.behaviour.QuickHideBehavior" />


        <LinearLayout
            android:id="@+id/no_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_error_text"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/empty_search_text_upper"
                android:textColor="@color/black_39"
                android:textSize="@dimen/empty_search_text_size"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="@string/empty_search_text_lower"
                android:textColor="@color/black_38"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="normal" />

        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>


    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/progbar_height"
            android:layout_height="@dimen/progbar_height"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>