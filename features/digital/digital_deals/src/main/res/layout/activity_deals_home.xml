<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bottomnav_bg">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize" />
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/base_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/bottomnav_bg"
        tools:context="com.tokopedia.events.view.activity.EventsHomeActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/bottomnav_bg">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bottomnav_bg"

                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bottomnav_bg"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <include

                        layout="@layout/deals_category" />

                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/bottomnav_bg"
                app:layout_scrollFlags="scroll|snap">

                <TextView
                    android:id="@+id/tv_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:fontFamily="sans-serif-medium"
                    android:text="Populer di Jakarta "
                    android:textColor="@color/black_39"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/number_of_locations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="(25)"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
                    app:layout_constraintLeft_toRightOf="@+id/tv_popular"
                    app:layout_constraintTop_toTopOf="@+id/tv_popular"
                     />

                <TextView
                    android:id="@+id/tv_see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:fontFamily="sans-serif-medium"
                    android:text="Lihat Semua"
                    android:textColor="@color/medium_green"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_popular"
                    app:layout_constraintVertical_bias="0.5" />

            </android.support.constraint.ConstraintLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bottomnav_bg"
                app:layout_collapseMode="parallax">


                <TextView
                    android:id="@+id/tv_featured_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_24"
                    android:fontFamily="sans-serif-medium"
                    android:text="Brand Unggulan"
                    android:textColor="@color/black_39"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="Lihat Semua"
                    android:textColor="@color/green_nob"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_featured_brand"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_featured_brand" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewCatItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/tv_featured_brand"
                    app:spanCount="4"
                    tools:listitem="@layout/item_category_brand" />


            </android.support.constraint.ConstraintLayout>


        </android.support.design.widget.AppBarLayout>



    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>