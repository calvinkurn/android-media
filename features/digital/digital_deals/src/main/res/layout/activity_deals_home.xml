<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:background="@color/bottomnav_bg"

    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:elevation="0dp" />

    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/base_main_content"
        android:layout_width="match_parent"
        android:background="@color/bottomnav_bg"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        tools:context="com.tokopedia.events.view.activity.EventsHomeActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:background="@color/bottomnav_bg"

            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bottomnav_bg"

                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/bottomnav_bg"
                    app:layout_collapseMode="parallax">

                    <include

                        layout="@layout/deals_category" />

                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bottomnav_bg"
                android:layout_marginBottom="@dimen/new_margin_med"
                android:layout_marginTop="@dimen/new_margin_med"
                app:layout_scrollFlags="scroll|snap">

                <TextView
                    android:id="@+id/tv_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/new_margin_med"
                    android:layout_marginTop="@dimen/new_margin_med"
                    android:fontFamily="sans-serif-medium"
                    android:text="Populer di Jakarta"
                    android:textColor="@color/black_39"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="normal"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/new_margin_med"
                    android:fontFamily="sans-serif-medium"
                    android:text="Ubah Lokasi"
                    android:textColor="@color/medium_green"
                    android:textSize="@dimen/font_micro"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_popular"
                    app:layout_constraintVertical_bias="0.5" />

            </android.support.constraint.ConstraintLayout>


        </android.support.design.widget.AppBarLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/new_margin_med"
            android:layout_marginRight="@dimen/new_margin_med"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/progbar_height"
            android:layout_height="@dimen/progbar_height"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>