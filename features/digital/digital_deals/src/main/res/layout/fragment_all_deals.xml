<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/tv_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:text="Populer di Jakarta "
        android:textColor="@color/black_39"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/number_of_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="(25)"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_popular"
        app:layout_constraintLeft_toRightOf="@+id/tv_popular"
        app:layout_constraintTop_toTopOf="@+id/tv_popular" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/number_of_locations"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/deals_item_card" />

    <com.tokopedia.design.button.BottomActionView
        android:id="@+id/bottom_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="@dimen/padding_med"
        app:bav_1_display="true"
        app:bav_2_display="true"
        app:bav_icon_1="@drawable/ic_search_sort"
        app:bav_icon_2="@drawable/ic_search_filter"
        app:bav_label_1="@string/search_sort_label"
        app:bav_label_2="@string/search_filter_label"
        app:layout_behavior="com.tokopedia.digital_deals.view.behaviour.QuickHideBehavior" />

</android.support.constraint.ConstraintLayout>