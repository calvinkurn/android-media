<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_250"
    android:layout_height="150dp"
    android:layout_marginLeft="@dimen/dp_4"
    android:layout_marginRight="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_72"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@color/grey_1100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.v7.widget.CardView
            android:id="@+id/cv_brand"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tv_hot_deal"
            style="@style/TextView.Micro11.FontMedium.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/details_header_background"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_3"
            android:text="@string/hot_deal"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_brand_name"
            style="@style/TextView.Micro.Black40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintRight_toLeftOf="@+id/iv_wish_list"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bakerzin" />

        <TextView
            android:id="@+id/tv_deal_intro"
            style="@style/TextView.Small.FontMedium.BlackPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_6"
            android:lines="2"
            android:textColor="@color/deal_product_text_color"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            tools:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)" />


        <TextView
            android:id="@+id/tv_available_locations"
            style="@style/TextView.Micro.Black40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/ll_brand"
            app:layout_constraintRight_toLeftOf="@+id/tv_off"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            tools:text="Tersedia di 50 lokasi fgfg vgfg fgf gfgvgfgf fgfg fgf" />

        <TextView
            android:id="@+id/tv_off"
            style="@style/TextView.Micro11.Bold.Red"
            android:layout_width="@dimen/dp_52"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/background_lightgreen_oval"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_0"
            android:textColor="@color/deal_price_price__off_color"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toTopOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro"
            tools:text="20% OFF" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@color/divider_color"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_available_locations" />

        <TextView
            android:id="@+id/tv_mrp"
            style="@style/TextView.Micro.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_8"
            android:gravity="center"
            android:textColor="@color/clr_ae31353b"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toRightOf="@+id/tv_off"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro"
            app:layout_constraintBottom_toTopOf="@+id/tv_sales_price"
            tools:text="Rp50.000.000" />

        <TextView
            android:id="@+id/tv_sales_price"
            style="@style/TextView.Medium.FontMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:includeFontPadding="false"
            android:paddingVertical="@dimen/dp_8"
            android:textColor="@color/deal_sale_price__color"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Rp40.000.000" />

        <ImageView
            android:id="@+id/iv_wish_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            app:layout_constraintRight_toLeftOf="@+id/tv_wish_list"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_wish_list"
            style="@style/TextView.Micro.FontMedium.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@id/iv_wish_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_wish_list"
            tools:text="5" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:padding="@dimen/dp_8"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toRightOf="@id/tv_wish_list"
            app:layout_constraintTop_toTopOf="@+id/tv_mrp"
            app:srcCompat="@drawable/ic_share_via_card" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

