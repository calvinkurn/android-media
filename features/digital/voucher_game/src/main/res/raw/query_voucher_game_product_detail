query voucherGameProductDetail($menuID: Int!, $operator: String!){
  rechargeCatalogProductInput(menuID: $menuID, platformID: 5, operator: $operator) {
    needEnquiry
    isShowingProduct
    enquiryFields {
      id
      param_name
      name
      text
      placeholder
      help
      validations {
        rule
        title
      }
    }
    product {
      name
      text
      dataCollections {
        name
        products {
          id
          attributes {
            desc
            price
            promo {
              id
              new_price
            }
            product_labels
            detail
            detail_compact
            detail_url
            detail_url_text
          }
        }
      }
    }
  }
}