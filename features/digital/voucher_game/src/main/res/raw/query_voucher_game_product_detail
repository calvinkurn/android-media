query voucherGameProductDetail($menuID: Int!, $operator: String!){
  rechargeCatalogProductInput(menuID: $menuID, platformID: 5, operator: $operator) {
    needEnquiry
    isShowingProduct
    enquiryFields {
      id
      param_name
      name
      validations {
        rule
        title
      }
    }
    product {
      name
      text
      dataCollections {
        name
        products {
          id
          attributes {
            price
            detail
            info
            promo {
              id
              new_price
            }
            product_labels
          }
        }
      }
    }
  }
}