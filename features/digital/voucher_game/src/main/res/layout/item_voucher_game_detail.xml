<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_2"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_2">

    <RelativeLayout
        android:id="@+id/layout_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:background="@drawable/digital_bg_product_item">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black_70"
            app:typographyType="heading_5"
            tools:text="Data 40.000" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/product_promo_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_product"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:visibility="gone"
            app:labelType="general_dark_red"
            app:textAllCaps="true"
            tools:labelTitle="test"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_promo_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_19"
            android:layout_below="@id/title_product"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_toRightOf="@id/product_promo_label"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/Neutral_N700_44"
            app:typographyType="small"
            tools:text="Pulsa 40.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_promo_price"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/dp_4"
            android:lines="1"
            android:textColor="@color/tkpd_main_orange"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Pulsa 40.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price"
            android:layout_alignParentLeft="true"
            android:lines="1"
            android:text="@string/vg_product_view_detail"
            android:textColor="@color/tkpd_main_green"
            android:visibility="gone"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:visibility="visible" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>