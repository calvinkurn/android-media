<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.common.travel">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".presentation.activity.TravelPassengerUpdateActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".presentation.activity.TravelPassengerListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White.MenuSmall"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".presentation.activity.TravelPassengerEditActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".presentation.activity.TravelContactDataActivity"
            android:label="@string/travel_contact_data_activity_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".presentation.activity.PhoneCodePickerActivity"
            android:label="@string/activity_label_flight_booking_phone_code"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

    </application>

</manifest>