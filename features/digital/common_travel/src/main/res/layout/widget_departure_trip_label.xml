<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tkpd_main_green" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_10">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_departure_header"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:srcCompat="@drawable/ic_travel_flight" />

        <TextView
            android:id="@+id/tv_destination_departure_header"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_toEndOf="@+id/image_departure_header"
            android:layout_toRightOf="@+id/image_departure_header"
            tools:text="CGK - DPS" />

        <TextView
            android:id="@+id/tv_name_departure_header"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_toEndOf="@+id/tv_destination_departure_header"
            android:layout_toRightOf="@+id/tv_destination_departure_header"
            tools:text=" | Garuda Indonesia" />

        <TextView
            android:id="@+id/tv_time_departure_header"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_below="@id/tv_destination_departure_header"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/image_departure_header"
            android:layout_toRightOf="@+id/image_departure_header"
            tools:text="19.30 - 07.10 +1" />

        <TextView
            android:id="@+id/tv_price_departure_header"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_below="@id/tv_destination_departure_header"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            tools:text="Rp5.000.000 /org" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tkpd_main_green" />

</LinearLayout>