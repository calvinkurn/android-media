<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_passenger"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20">

    <TextView
        android:id="@+id/passenger_name"
        style="@style/TextView.Small.BlackPrimary"
        tools:text="Ny Isyana Sarasvati" />

    <TextView
        android:id="@+id/passenger_status"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_below="@+id/passenger_name"
        android:text="(Utama)" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        app:srcCompat="@drawable/ic_travel_checked_green"/>

</RelativeLayout>