<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_2"
    app:cardElevation="@dimen/dp_2"
    app:cardCornerRadius="@dimen/dp_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12">

        <ProgressBar
            android:id="@+id/loading_bar"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_contact_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:ellipsize="end"
            android:lines="1"
            android:textStyle="bold"
            app:fontSize="small"
            app:layout_constraintEnd_toStartOf="@+id/ic_edit_contact"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ic_edit_contact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textViewTheme="lightPrimary"
            tools:text="Stevanus Kurniawan Suharyanto dasdnjnj" />


        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontSize="micro"
            app:layout_constraintTop_toBottomOf="@+id/tv_contact_name"
            android:layout_marginTop="@dimen/dp_8"
            app:textViewTheme="lightSecondary"
            tools:text="stevanus.suharyanto@tokopedia.com " />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_contact_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontSize="micro"
            app:layout_constraintTop_toBottomOf="@+id/tv_contact_email"
            app:textViewTheme="lightSecondary"
            tools:text="+62 131 014 7481"
            android:layout_marginTop="@dimen/dp_2"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_edit_contact"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_traveller_contact_edit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>