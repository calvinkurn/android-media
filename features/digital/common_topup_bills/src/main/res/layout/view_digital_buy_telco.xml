<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buy_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="@dimen/dp_5"
        android:background="@color/separator_voucher" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="@dimen/dp_18"
        android:lines="1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="Total Pembayaran"
        app:typographyType="heading_5"
        android:textColor="@color/Neutral_N700_96"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:lines="1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        tools:text="Rp 25.200"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        android:textColor="@color/tkpd_main_orange"/>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/title"
        android:layout_alignBottom="@+id/total_price"
        style="@style/Button"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/white"
        android:background="@drawable/digital_bg_orange_rounded"
        android:layout_alignParentRight="true"
        android:text="Lanjut"/>

</RelativeLayout>