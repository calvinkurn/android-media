<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_2">

    <LinearLayout
        android:id="@+id/layout_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:textColor="@color/black_70"
            app:typographyType="heading_5"
            tools:text="Data 40.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/desc_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:lines="1"
            android:textColor="@color/clr_ae31353b"
            app:typographyType="body_3"
            tools:text="Masa aktif 30 hari"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifycomponents.Label
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:visibility="gone"
                app:labelTitle="test"
                app:textAllCaps="true" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_promo_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:lines="1"
                android:textColor="@color/Neutral_N700_44"
                app:typographyType="small"
                tools:text="Pulsa 40.000" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:lines="1"
            android:textColor="@color/tkpd_main_orange"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Pulsa 40.000" />

    </LinearLayout>

</android.support.v7.widget.CardView>