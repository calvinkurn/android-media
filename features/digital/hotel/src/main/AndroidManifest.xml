        <activity android:name=".search.presentation.activity.HotelSearchFilterActivity"
            android:label="@string/label_filter"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".hoteldetail.presentation.activity.HotelDetailActivity"
            android:label=""
