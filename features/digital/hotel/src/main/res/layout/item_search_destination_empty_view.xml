<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_48">
    <com.tokopedia.design.component.TextViewCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontSize="title"
        app:weight="medium"
        app:textViewTheme="lightPrimary"
        tools:textStyle="bold"
        android:text="@string/hotel_destination_empty_view_holder_title"
        android:textColor="@color/light_primary"
        android:gravity="center"
        />

    <com.tokopedia.design.component.TextViewCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontSize="micro"
        app:textViewTheme="lightDisabled"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/hotel_destination_empty_view_holder_subtitle"
        android:gravity="center"/>
</LinearLayout>