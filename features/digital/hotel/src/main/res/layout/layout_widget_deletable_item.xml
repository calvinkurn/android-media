<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_recent_search_item"
    android:paddingTop="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_12"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_name"
        style="@style/TextView.Small.BlackSecondary"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        tools:text="Jalan Sudirman"
        android:maxEms="5"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_name"
        android:layout_toEndOf="@+id/item_name"
        app:srcCompat="@drawable/ic_system_action_close_grayscale_16"
        />

</RelativeLayout>