<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">
        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/loader_image_view_1"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:corners="45"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_8"
            app:corners="4"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            app:layout_constraintLeft_toRightOf="@+id/loader_image_view_1"
            app:layout_constraintStart_toEndOf="@+id/loader_image_view_1"
            app:layout_constraintTop_toTopOf="@+id/loader_image_view_1"
            app:layout_constraintBottom_toBottomOf="@+id/loader_image_view_1"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_8"
            app:corners="4"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/loader_image_view_1"
            app:layout_constraintBottom_toBottomOf="@+id/loader_image_view_1"
            />
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/bg_line_separator"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_32"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">
        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_1"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_8"
            app:corners="4"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_8"
            app:corners="4"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            app:corners="4"
            android:layout_marginTop="@dimen/dp_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_text_view_1"
            app:width_weight="1"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            app:corners="4"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_text_view_2"
            app:width_weight="1"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            app:corners="4"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_text_view_3"
            app:width_weight="0.3"
            />
        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            app:corners="4"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_text_view_4"
            app:width_weight="0.1"
            />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>