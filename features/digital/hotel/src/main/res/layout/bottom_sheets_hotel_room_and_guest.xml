<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <com.tokopedia.common.travel.widget.SelectPassengerView
        android:id="@+id/spv_hotel_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:spv_icon="@drawable/ic_hotel_room"
        app:spv_max_value="5"
        app:spv_min_value="1"
        app:spv_subtitle=""
        app:spv_title="@string/hotel_bottom_sheets_room_count_title" />

    <com.tokopedia.common.travel.widget.SelectPassengerView
        android:id="@+id/spv_hotel_adult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:spv_icon="@drawable/ic_hotel_adult"
        app:spv_max_value="10"
        app:spv_min_value="1"
        app:spv_subtitle=""
        app:spv_title="@string/hotel_bottom_sheets_adult_count_title" />

    <com.tokopedia.common.travel.widget.SelectPassengerView
        android:id="@+id/spv_hotel_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:spv_icon="@drawable/ic_hotel_child"
        app:spv_max_value="10"
        app:spv_min_value="0"
        app:spv_subtitle="@string/hotel_bottom_sheets_child_count_subtitle"
        app:spv_title="@string/hotel_bottom_sheets_child_count_title" />

</LinearLayout>