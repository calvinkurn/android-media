<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:scrollbars="vertical"
            android:clipToPadding="false"/>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <com.tokopedia.design.button.BottomActionView
        android:id="@+id/bottom_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_16"
        android:visibility="gone"
        app:bav_icon_1="@drawable/ic_sort_dark_grey"
        app:bav_icon_2="@drawable/ic_filter_dark_grey"
        app:bav_1_display="true"
        app:bav_label_1="@string/travel_title_sort_search"
        app:bav_label_2="@string/label_filter"
        app:bav_2_display="true"
        app:layout_anchor="@+id/recycler_view"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_behavior="com.tokopedia.design.behavior.QuickReturnFooterBehavior" />

</android.support.design.widget.CoordinatorLayout>