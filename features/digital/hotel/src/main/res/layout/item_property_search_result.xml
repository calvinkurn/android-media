<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_3"
    app:cardPreventCornerOverlap="false"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    app:cardBackgroundColor="@color/cardview_light_background">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_88"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            tools:src="@color/light_blue_300"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/deals_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:lineSpacingExtra="@dimen/sp_4"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:background="@drawable/bg_hotel_deals_tag"
            android:visibility="gone"
            app:fontSize="micro"
            app:textViewTheme="darkPrimary"
            app:weight="medium"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintLeft_toLeftOf="@+id/image"
            app:layout_constraintStart_toStartOf="@+id/image"
            app:layout_constraintRight_toRightOf="@+id/image"
            app:layout_constraintEnd_toEndOf="@+id/image"
            tools:text="Deals of Year End"
            tools:visibility="visible"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:singleLine="true"
            android:ellipsize="end"
            app:textViewTheme="lightPrimary"
            app:fontSize="small"
            app:weight="medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Comfy Room in Karet" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            app:fontSize="micro"
            app:textViewTheme="lightSecondary"
            android:lineSpacingExtra="@dimen/sp_4"
            android:textSize="@dimen/sp_10"
            android:paddingLeft="@dimen/dp_6"
            android:paddingStart="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:background="@drawable/bg_round_corner_solid_grey"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="Hotel"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            app:fontSize="micro"
            app:textViewTheme="lightSecondary"
            android:drawablePadding="@dimen/dp_4"
            app:drawableLeftCompat="@drawable/ic_location_fill"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/type"
            app:layout_constraintRight_toRightOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            tools:text="Kuningan"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:singleLine="true"
            android:ellipsize="end"
            app:fontSize="micro"
            android:textColor="@color/blue_booking"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/location"
            tools:text="8,6 Mengesankan"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/price_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"
            app:fontSize="micro"
            app:textViewTheme="lightSecondary"
            app:layout_constraintRight_toRightOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/rate"
            tools:text="Rp20.800.0000"
            tools:visibility="visible"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:visibility="gone"
            app:fontSize="micro"
            app:textViewTheme="lightSecondary"
            android:textColor="@color/pink_property"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/price_origin"
            app:layout_constraintBottom_toBottomOf="@+id/price_origin"
            app:layout_constraintRight_toLeftOf="@+id/price_origin"
            app:layout_constraintEnd_toStartOf="@+id/price_origin"
            app:layout_constraintHorizontal_bias="1"
            tools:text="Sisa 2 kamar"
            tools:visibility="visible"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            app:fontSize="small"
            app:textViewTheme="lightPrimary"
            app:layout_goneMarginTop="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/price_origin"
            app:layout_constraintHorizontal_bias="1"
            tools:text="Rp10.800.0000"/>

        <com.tokopedia.design.component.TextViewCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontSize="micro"
            app:textViewTheme="lightSecondary"
            android:textSize="@dimen/sp_10"
            android:gravity="end"
            android:layout_marginBottom="@dimen/dp_12"
            app:layout_constraintRight_toRightOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Termasuk pajak â€¢ /kamar/malam"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>