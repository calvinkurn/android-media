<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.hotel.common.presentation.widget.SwitcherCustomView
            android:id="@+id/scv_hotel_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:leftSubtitleText="@string/hotel_homepage_check_in"
            app:rightSubtitleText="@string/hotel_check_out_calendar_title" />

        <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/rv_policy"
            android:layout_weight="1">

        </com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>