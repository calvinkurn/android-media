<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/tv_hotel_menu_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="@string/hotel_bottom_menu_transaction_list"
        app:fontSize="small"
        app:weight="medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_line_separator" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/tv_hotel_menu_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="@string/hotel_bottom_menu_promo"
        app:fontSize="small"
        app:weight="medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_line_separator" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/tv_hotel_menu_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="@string/hotel_bottom_menu_help"
        app:fontSize="small"
        app:weight="medium" />

</LinearLayout>