<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_email_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16" />

    <View
        android:id="@+id/divider_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <com.tokopedia.design.component.TextViewCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hotel_share_title_email"
            app:fontSize="micro"
            app:textViewTheme="lightDisabled" />

        <com.tokopedia.design.component.EditTextCompat
            android:id="@+id/ev_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/ev_error_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_3"
            android:visibility="gone"
            app:fontSize="micro"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/container_add_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                app:srcCompat="@drawable/ic_facility_add" />

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/hotel_share_add_email"
                android:textColor="@color/green_500"
                app:fontSize="small" />

        </LinearLayout>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btn_send_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:enabled="false"
            android:text="@string/button_send"
            app:buttonCompatSize="big"
            app:buttonCompatType="primary" />

    </LinearLayout>

</LinearLayout>