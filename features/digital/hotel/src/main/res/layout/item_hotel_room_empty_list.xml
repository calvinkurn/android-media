<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2" />
    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_empty_state"
        android:layout_marginBottom="@dimen/dp_15"/>

    <com.tokopedia.design.component.TextViewCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_empty_title_text"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/msg_network_error_1"
        app:weight="medium"
        app:textViewTheme="lightPrimary"
        app:fontSize="title"
        />
    <com.tokopedia.design.component.TextViewCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_empty_content_text"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/msg_network_error_2"
        android:textColor="@color/grey_400"
        app:weight="regular"
        app:fontSize="micro" />


    <TextView
        android:id="@+id/text_view_empty_content_item_text"
        style="@style/TextView.Small.Green"
        android:layout_margin="@dimen/dp_20"
        android:visibility="gone"
        tools:text="@string/app_name" />

    <!-- text will be override programmatically -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add_promo"
        android:background="@drawable/bg_button_green"
        style="@style/Button.Submit.Green"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/title_try_again"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
