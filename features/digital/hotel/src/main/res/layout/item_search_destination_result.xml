<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popular_search_item"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="@dimen/dp_16">
        <ImageView
            android:id="@+id/search_destination_icon"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            tools:src="@drawable/ic_icon_location_grey"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/search_destination_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jakarta"
                    app:fontSize="small"
                    android:textColor="@color/clr_f531353b"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/search_destination_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_2"
                    android:textColor="#9e9fa3"
                    android:textSize="@dimen/dp_10"
                    android:background="@drawable/bg_search_destination_tag"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_4">

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/search_destination_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Indonesia"
                    app:fontSize="micro"
                    app:textViewTheme="lightDisabled"
                    android:lineSpacingExtra="@dimen/dp_6"/>

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/search_destination_hotel_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    tools:text="2000+ hotel"
                    app:fontSize="micro"
                    app:textViewTheme="lightDisabled"
                    android:lineSpacingExtra="@dimen/dp_6"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bg_line_separator"
        android:layout_marginLeft="@dimen/dp_16"/>
</LinearLayout>