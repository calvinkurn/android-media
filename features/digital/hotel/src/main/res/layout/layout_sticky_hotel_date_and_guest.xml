<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/bg_line_separator"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">
        <LinearLayout
            android:id="@+id/hotel_date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hotel_calendar"
                android:paddingRight="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"/>
            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="18 Des 2019 - 20 Jan 2020"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View android:id="@+id/seperator"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_line_separator"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"/>

        <LinearLayout
            android:id="@+id/hotel_room_and_guest_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hotel_room"
                android:paddingRight="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/total_room_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="1"
                android:paddingLeft="@dimen/dp_4"
                android:paddingStart="@dimen/dp_4"
                android:paddingRight="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hotel_adult"
                android:paddingRight="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/total_guest_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="2"
                android:paddingLeft="@dimen/dp_4"
                android:paddingStart="@dimen/dp_4"
                android:paddingRight="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/bg_line_separator"/>

</LinearLayout>