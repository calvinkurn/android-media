<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_button_white_enabled_border">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_switcher_left_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontSize="micro"
            tools:text="Check-in" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_switcher_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontSize="small"
            app:textViewTheme="lightPrimary"
            app:weight="medium"
            tools:text="Mulai 11:00" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_line_separator" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_switcher_right_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontSize="micro"
            tools:text="Check-out" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_switcher_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontSize="small"
            app:textViewTheme="lightPrimary"
            app:weight="medium"
            tools:text="Sampai 21:00" />

    </LinearLayout>

</LinearLayout>