<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:orientation="vertical">

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotel_search_filter_star_title"
                app:fontSize="small"
                app:textViewTheme="lightPrimary"
                app:weight="medium"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/filter_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"/>

            <View android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider_color"/>

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/hotel_search_filter_range_price_title"
                app:fontSize="small"
                app:textViewTheme="lightPrimary"
                app:weight="medium"/>

            <com.tokopedia.design.text.RangeInputView
                android:id="@+id/price_range_input_view"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:driv_label_max="@string/hotel_search_filter_price_max_label"
                app:driv_label_min="@string/hotel_search_filter_price_min_label"
                app:driv_typable="false"
                app:driv_value_max_length="@integer/max_length_duration_input"
                app:driv_value_text_appearance="@style/TextView.Small.Bold" />

            <View android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider_color"/>

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/hotel_search_filter_rating_title"
                app:fontSize="small"
                app:textViewTheme="lightPrimary"
                app:weight="medium"/>

            <SeekBar android:id="@+id/rating_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:minHeight="@dimen/dp_2"
                android:maxHeight="@dimen/dp_4"
                android:thumb="@drawable/bg_hotel_thumb"
                android:progressDrawable="@drawable/bg_hotel_seekbar_progress"
                android:layout_marginTop="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_0"
                android:paddingStart="@dimen/dp_0"
                android:paddingEnd="@dimen/dp_0"
                android:paddingRight="@dimen/dp_0"
                android:thumbOffset="0dp"
                android:max="4"
                android:progress="4"
                android:scaleX="-1"/>

            <LinearLayout android:id="@+id/base_rating_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_7"
                android:paddingRight="@dimen/dp_7"/>

            <View android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider_color"/>

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/hotel_search_filter_accomodation_type_title"
                app:fontSize="small"
                app:textViewTheme="lightPrimary"
                app:weight="medium"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/filter_accomodation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"/>

            <View android:layout_marginTop="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/divider_color"/>

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/hotel_search_filter_preference_title"
                app:fontSize="small"
                app:textViewTheme="lightPrimary"
                app:weight="medium"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/filter_preference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"/>

        </LinearLayout>

    </ScrollView>

    <com.tokopedia.design.component.FloatingButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:floatButtonSize="big"
        app:floatButtonType="primary"
        app:shadowTop="true"
        app:buttonTextAllCaps="false"
        app:text="@string/label_save"/>
</LinearLayout>