query PropertySearchRoom($data:PropertySearchRoomRequest!){
  propertySearchRoom(input:$data){
    propertyID
    rooms{
      ID
      breakfastInfo{
        isBreakFastIncluded
        mealPlan
        breakFast
      }
      occupancyInfo{
        maxOccupancy
        maxFreeChild
        occupancyText
      }
      depositInfo{
        isNeedDeposit
        depositText
      }
      refundInfo{
        isRefundAble
        refundStatus
      }
      creditcardInfo{
        isCCRequired
        info
      }
      numberRoomLeft
      roomPrice{
        price
        priceAmount
        totalPrice
        totalPriceAmount
        extraCharges{
          netPrice
          netPriceAmount
          extraChargeInfo{
            name
            excluded
            type
            price
            priceAmount
          }
        }
      }
      roomPolicy{
        class
        content
      }
      cancelPolicy{
        subHeader
        content
      }
      refundableUntil
      roomInfo{
        description
        name
        bathRoomCount
        size
        maxGuest
        facility{
          name
          icon
        }
        mainFacility{
          name
          icon
        }
        roomImages{
          urlMax300
          urlOriginal
          urlSquare
        }
        maxPrice
        minPrice
      }
      bedInfo
      taxes
      extraBedInfo{
        IsFreeExtraBed
        Content
      }
    }
    isAddressRequired
    isCvCRequired
    isDirectPayment
  }
}