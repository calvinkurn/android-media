<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.abstraction.base.view.widget.SwipeToRefresh xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/digital_homepage_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true">

        <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.tokopedia.digital.home.presentation.customview.DigitalHomepageToolbar
            android:id="@+id/digital_homepage_toolbar"
            style="@style/Toolbar.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/transparent"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:elevation="@dimen/dp_4"
            app:navigationIcon="@drawable/ic_action_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_3">

                <com.tokopedia.common_digital.common.widget.DigitalSearchInputView
                    android:id="@+id/digital_homepage_search_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_10"
                    app:siv_search_hint="@string/digital_home_search_view_hint"/>

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_margin="@dimen/dp_8"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_warning_alert"/>

            </LinearLayout>

        </com.tokopedia.digital.home.presentation.customview.DigitalHomepageToolbar>

    </RelativeLayout>
</com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>