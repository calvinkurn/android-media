<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_16">

    <com.tokopedia.banner.dynamic.BannerViewDynamicBackground
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/banner_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        tools:visibility="visible">

        <FrameLayout
            android:id="@+id/container_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_banner_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_dynamic_background_height"
                android:background="@color/tkpd_main_green" />

            <ImageView
                android:id="@+id/overlay_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_dynamic_background_height"
                android:alpha="0.32"
                android:background="#31353B"
                android:scaleType="centerCrop" />

            <View
                android:id="@+id/overlay_round"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="bottom"
                android:background="@drawable/background_banner_image_mask"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </FrameLayout>

        <View
            android:id="@+id/white_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_background" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="?actionBarSize"
            tools:layout_constraintGuide_begin="30dp" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_121"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
