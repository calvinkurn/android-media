<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_16">

    <LinearLayout
        android:id="@+id/digital_homepage_new_user_zone_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/digital_homepage_spotlight_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_5" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_8">

            <ImageView
                android:id="@+id/digital_homepage_new_user_zone_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/digital_homepage_new_user_zone_shimmering"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_96"
        app:corners="16" />

</LinearLayout>