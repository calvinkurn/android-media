<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivOWOCSection"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvOwOCSectionTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvOwOCSectionTitle"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOwOCSectionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="&amp; dikirim bersamaan"
        app:typographyType="paragraph_2"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/ivOWOCSection"
        app:layout_constraintEnd_toStartOf="@id/icOWOCSectionChevronRight"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOwOCSectionDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Dengan total 2 pesanan"
        app:layout_constrainedHeight="true"
        app:typographyType="paragraph_3"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivOWOCSection"
        app:layout_constraintStart_toStartOf="@id/ivOWOCSection"
        app:layout_constraintEnd_toStartOf="@id/icOWOCSectionChevronRight" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icOWOCSectionChevronRight"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tvOwOCSectionTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvOwOCSectionDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon_name="CHEVRON_RIGHT"
        android:layout_marginEnd="16dp" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerOWOCSection"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvOwOCSectionDesc"/>

</androidx.constraintlayout.widget.ConstraintLayout>