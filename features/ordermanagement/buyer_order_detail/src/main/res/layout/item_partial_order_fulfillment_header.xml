<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icPofHeader"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="CHECK_CIRCLE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPovHeaderLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toBottomOf="@id/icPofHeader"
        app:layout_constraintStart_toEndOf="@id/icPofHeader"
        app:layout_constraintTop_toTopOf="@id/icPofHeader"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Produk tersedia (9 barang)" />

</androidx.constraintlayout.widget.ConstraintLayout>