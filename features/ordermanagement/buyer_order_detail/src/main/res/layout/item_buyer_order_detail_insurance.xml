<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_buyer_order_detail_insurance_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_buyer_order_detail_insurance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_buyer_order_detail_insurance_logo"
        app:layout_constraintEnd_toStartOf="@id/ic_buyer_order_detail_insurance_chevron"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_buyer_order_detail_insurance_logo"
        app:layout_constraintTop_toTopOf="@id/iv_buyer_order_detail_insurance_logo"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Polis Proteksi akan segera aktif" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_buyer_order_detail_insurance_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/ic_buyer_order_detail_insurance_chevron"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_buyer_order_detail_insurance_logo"
        app:typographyType="display_3"
        tools:text="Proteksi akan aktif setelah pesanan selesai, ya." />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_buyer_order_detail_insurance_chevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>