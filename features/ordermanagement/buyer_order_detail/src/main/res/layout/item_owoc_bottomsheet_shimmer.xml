<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@color/Unify_Background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/owocShimmer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/item_owoc_partial_shimmer" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerOwocShimmer"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/owocShimmer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/owocShimmer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dividerOwocShimmer"
        app:layout_constraintStart_toStartOf="@id/owocShimmer1"
        app:layout_constraintEnd_toEndOf="@id/owocShimmer1"
        layout="@layout/item_owoc_partial_shimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>