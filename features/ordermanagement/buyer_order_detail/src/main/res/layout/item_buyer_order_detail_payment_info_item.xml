<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/buyer_order_detail_section_top_margin"
    android:layout_marginEnd="@dimen/spacing_lvl4">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBuyerOrderDetailPaymentMethodLabel"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/buyer_order_detail_section_top_margin"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toStartOf="@id/tvBuyerOrderDetailPaymentMethodValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="Total Harga (2 Barang)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBuyerOrderDetailPaymentMethodValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/tvBuyerOrderDetailPaymentMethodLabel"
        app:layout_constraintTop_toTopOf="@id/tvBuyerOrderDetailPaymentMethodLabel"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="body_3"
        tools:text="Rp5.000.000" />

</androidx.constraintlayout.widget.ConstraintLayout>