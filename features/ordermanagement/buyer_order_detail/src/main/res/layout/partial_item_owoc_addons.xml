<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icOwocAddonsIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@id/tvOwocAddonsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon_name="ADD_ON" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOwocAddonsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toBottomOf="@id/icOwocAddonsIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icOwocAddonsIcon"
        app:layout_constraintTop_toTopOf="@id/icOwocAddonsIcon"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Pelengkap Produk" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOwocAddonsList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icOwocAddonsIcon"
        tools:itemCount="2"
        tools:listitem="@layout/item_buyer_order_detail_addons_list" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerOwocAddonsTotalPrice"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/rvOwocAddonsList"
        app:layout_constraintStart_toStartOf="@id/rvOwocAddonsList"
        app:layout_constraintTop_toBottomOf="@id/rvOwocAddonsList" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOwocAddonsTotalPriceLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        tools:text="@string/order_addons_total_price_label"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dividerOwocAddonsTotalPrice"
        app:layout_constraintTop_toBottomOf="@id/dividerOwocAddonsTotalPrice"
        app:typographyType="small" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOwocAddonsTotalPriceValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvOwocAddonsTotalPriceLabel"
        app:layout_constraintTop_toBottomOf="@id/tvOwocAddonsTotalPriceLabel"
        app:typographyType="heading_6"
        tools:text="Rp4.000" />

</androidx.constraintlayout.widget.ConstraintLayout>