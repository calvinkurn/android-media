<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="11dp"
    android:layout_marginEnd="11dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_buyer_order_detail_platform_fee_info"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_color_light_disabled="@color/Unify_GN500"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_color_night_disabled="@color/Unify_GN500"
        app:icon_color_night_enable="@color/Unify_GN500"
        app:icon_name="LIGHT_BULB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_buyer_order_detail_platform_fee_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/ic_buyer_order_detail_platform_fee_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/ic_buyer_order_detail_platform_fee_info"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        tools:text="@string/buyer_order_detail_platform_fee_info" />

</androidx.constraintlayout.widget.ConstraintLayout>