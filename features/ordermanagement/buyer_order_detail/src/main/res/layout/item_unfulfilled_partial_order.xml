<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ContainerUnify
        android:id="@+id/containerUnFulfilledPof"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:container_color="RED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivUnfulfilledProductThumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvUnfulfilledProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toTopOf="@id/tvUnfulfilledProductQtyPrice"
        app:layout_constraintEnd_toStartOf="@id/tvUnfulfilledProductRequestStock"
        app:layout_constraintStart_toEndOf="@id/ivUnfulfilledProductThumbnail"
        app:layout_constraintTop_toTopOf="@id/ivUnfulfilledProductThumbnail"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="paragraph_3"
        app:typographyWeight="bold"
        tools:text="Jordan 1 Mid Royal (2020) - Original Hoops Malaysia" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvUnfulfilledProductQtyPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@id/ivUnfulfilledProductThumbnail"
        app:layout_constraintEnd_toStartOf="@id/tvUnfulfilledProductRequestStock"
        app:layout_constraintStart_toStartOf="@id/tvUnfulfilledProductName"
        app:layout_constraintTop_toBottomOf="@id/tvUnfulfilledProductName"
        app:typographyType="small"
        tools:text="2 x Rp 2.000.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvUnfulfilledProductRequestStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toBottomOf="@id/ivUnfulfilledProductThumbnail"
        app:layout_constraintTop_toTopOf="@id/ivUnfulfilledProductThumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="paragraph_3"
        tools:text="2 dari 3" />

</androidx.constraintlayout.widget.ConstraintLayout>