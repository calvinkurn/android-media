<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivBomDetailAddonsIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:unify_image_corner_radius="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvBomDetailAddonsTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Unify_NN600"
        tools:text="Pelengkap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBomDetailAddonsIcon"
        app:layout_constraintTop_toTopOf="@id/ivBomDetailAddonsIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivBomDetailAddonsIcon"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivBomDetailAddonsThumbnail"
        android:layout_width="@dimen/buyer_order_detail_product_thumbnail_size"
        android:layout_height="@dimen/buyer_order_detail_product_thumbnail_size"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivBomDetailAddonsIcon" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsName"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toTopOf="@id/tvBuyerOrderDetailProductPriceQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBomDetailAddonsThumbnail"
        app:layout_constraintTop_toTopOf="@id/ivBomDetailAddonsThumbnail"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="heading_6"
        tools:text="Jordan 1 Mid Royal (2020) - Original Hoops Malaysia" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsPriceQuantity"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toBottomOf="@id/ivBomDetailAddonsThumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvBomDetailAddonsName"
        app:layout_constraintTop_toBottomOf="@id/tvBomDetailAddonsName"
        app:typographyType="body_3"
        tools:text="2 x Rp 2.000.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsToLabel"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="@id/ivBomDetailAddonsThumbnail"
        app:layout_constraintTop_toBottomOf="@id/ivBomDetailAddonsThumbnail"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="@string/order_addons_to_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsFromLabel"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_68"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="@id/ivBomDetailAddonsThumbnail"
        app:layout_constraintTop_toBottomOf="@id/tvBomDetailAddonsToLabel"
        app:typographyType="body_3"
        tools:text="@string/order_addons_from_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsToValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_68"
        app:typographyWeight="reguler"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineAddonsMessage"
        app:layout_constraintTop_toTopOf="@id/tvBomDetailAddonsToLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvBomDetailAddonsToLabel"
        app:typographyType="body_3"
        tools:text="@string/order_addons_to_value" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsFromValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_68"
        app:typographyWeight="reguler"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineAddonsMessage"
        app:layout_constraintTop_toTopOf="@id/tvBomDetailAddonsFromLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvBomDetailAddonsFromLabel"
        app:typographyType="body_3"
        tools:text="@string/order_addons_from_value" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAddonsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.11"
        android:orientation="vertical"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsMessageValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Unify_N700_68"
        tools:text="Selamat hari lebaran. Mohon maaf lahir dan batin. Stay safe and see you soon. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean nec arcu velit. Duis dui elit, convallis quis mattis id, vestibulum at erat. Vestibulum pretium tempor conv. Tutup."
        app:typographyType="body_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvBomDetailAddonsFromLabel"
        app:layout_constraintTop_toBottomOf="@id/tvBomDetailAddonsFromLabel"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerBomDetailAddonsTotalPrice"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/tvBomDetailAddonsMessageValue"
        app:layout_constraintTop_toBottomOf="@id/tvBomDetailAddonsMessageValue"
        app:layout_constraintStart_toStartOf="@id/tvBomDetailAddonsMessageValue"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsTotalPriceLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Unify_N700_96"
        android:text="@string/order_addons_total_price_label"
        app:typographyType="small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dividerBomDetailAddonsTotalPrice"
        app:layout_constraintTop_toBottomOf="@id/dividerBomDetailAddonsTotalPrice"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBomDetailAddonsTotalPriceValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/Unify_N700_96"
        tools:text="Rp4.000"
        app:typographyType="heading_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvBomDetailAddonsTotalPriceLabel"
        app:layout_constraintTop_toBottomOf="@id/tvBomDetailAddonsTotalPriceLabel"/>
</merge>