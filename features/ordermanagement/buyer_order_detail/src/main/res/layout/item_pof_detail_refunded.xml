<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPofUnfulfilledDetailLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvPofUnfulfilledDetailValue"
        app:typographyType="display_3"
        tools:text="Harga produk yang tidak bisa dikirim (1 barang)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPofUnfulfilledDetailValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_3"
        android:gravity="end"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPofUnfulfilledDetailLabel"
        app:layout_constraintTop_toTopOf="@id/tvPofUnfulfilledDetailLabel"
        tools:text="Rp5.000.000" />

</androidx.constraintlayout.widget.ConstraintLayout>