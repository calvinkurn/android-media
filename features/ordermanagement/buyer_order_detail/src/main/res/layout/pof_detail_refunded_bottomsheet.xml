<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPofUnfulfilledDetailLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvPofUnfulfilledDetailValue"
        app:typographyType="display_3"
        tools:text="Harga produk yang tidak bisa dikirim (1 barang)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPofUnfulfilledDetailValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_3"
        app:layout_constraintBottom_toBottomOf="@id/tvPofUnfulfilledDetailLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPofUnfulfilledDetailLabel"
        tools:text="Rp5.000.000" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerPofDetailRefunded"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPofUnfulfilledDetailLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPofTotalRefundedLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerPofDetailRefunded"
        app:layout_constraintEnd_toStartOf="@id/tvPofTotalRefundedValue"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Total Dana dikembalikan" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPofTotalRefundedValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        app:layout_constraintBottom_toBottomOf="@id/tvPofTotalRefundedLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPofTotalRefundedLabel"
        tools:text="Rp5.000.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPofRefundedDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPofTotalRefundedLabel"
        app:layout_constraintEnd_toStartOf="@id/tvPofTotalRefundedValue"
        app:typographyType="display_3"
        tools:text="Dana dikembalikan sesuai metode pembayaranmu " />

</androidx.constraintlayout.widget.ConstraintLayout>