<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/spacing_lvl3"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    android:animateLayoutChanges="true">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBuyerOrderDetailPaymentInfoLabel"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="heading_5"
        tools:text="Total Harga (2 Barang)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBuyerOrderDetailPaymentInfoValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="0dp"
        android:gravity="end"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/tvBuyerOrderDetailPaymentInfoLabel"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="heading_5"
        tools:text="Rp5.000.000" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout>