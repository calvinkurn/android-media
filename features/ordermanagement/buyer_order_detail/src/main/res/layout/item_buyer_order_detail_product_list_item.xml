<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardBuyerOrderDetailProduct"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/buyer_order_detail_card_horizontal_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <ViewStub
            android:id="@+id/itemBomDetailProductViewStub"
            android:inflatedId="@+id/itemBomDetailProductViewStub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            android:layout="@layout/partial_item_buyer_order_detail_product_list"/>

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/dividerBomDetailProduct"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemBomDetailProductViewStub"/>

        <ViewStub
            android:id="@+id/itemBomDetailAddonsViewStub"
            android:inflatedId="@+id/itemBomDetailAddonsViewStub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/partial_item_buyer_order_detail_addons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerBomDetailProduct"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>