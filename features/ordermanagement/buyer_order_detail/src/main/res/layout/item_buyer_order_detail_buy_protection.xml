<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/spacing_lvl4"
    android:layout_marginEnd="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/icBuyerOrderDetailBuyProtectionBadge"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:layout_constraintEnd_toStartOf="@id/tvBuyerOrderDetailBuyProtectionLabel"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_buy_protection" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBuyerOrderDetailBuyProtectionLabel"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:text="@string/buy_protection_title"
        app:layout_constraintBottom_toBottomOf="@id/icBuyerOrderDetailBuyProtectionBadge"
        app:layout_constraintEnd_toStartOf="@id/tvBuyerOrderDetailBuyProtectionTimer"
        app:layout_constraintStart_toEndOf="@id/icBuyerOrderDetailBuyProtectionBadge"
        app:layout_constraintTop_toTopOf="@id/icBuyerOrderDetailBuyProtectionBadge"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="heading_5" />

    <com.tokopedia.unifycomponents.timer.TimerUnifySingle
        android:id="@+id/tvBuyerOrderDetailBuyProtectionTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="@id/tvBuyerOrderDetailBuyProtectionLabel"
        app:layout_constraintEnd_toStartOf="@id/tvBuyerOrderDetailBuyProtectionSeeMore"
        app:layout_constraintStart_toEndOf="@id/tvBuyerOrderDetailBuyProtectionLabel"
        app:layout_constraintTop_toTopOf="@id/tvBuyerOrderDetailBuyProtectionLabel"
        app:timer_unify_single_remainingHours="0"
        app:timer_unify_single_remainingMinutes="0"
        app:timer_unify_single_remainingSeconds="0"
        app:timer_unify_single_showClockIcon="true"
        app:timer_unify_single_type="auto"
        app:timer_unify_single_variant="informative" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBuyerOrderDetailBuyProtectionDescription"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/buy_protection_description"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintEnd_toStartOf="@id/tvBuyerOrderDetailBuyProtectionSeeMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icBuyerOrderDetailBuyProtectionBadge"
        app:typographyType="body_3" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/tvBuyerOrderDetailBuyProtectionSeeMore"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>