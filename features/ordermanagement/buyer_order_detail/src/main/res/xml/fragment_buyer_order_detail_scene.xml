<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/initial" />

    <ConstraintSet android:id="@+id/loading">
        <Constraint
            android:id="@+id/loaderBuyerOrderDetail"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/toolbarBuyerOrderDetail" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/show_content_with_sticky_button">
        <Constraint
            android:id="@+id/containerActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/swipeRefreshBuyerOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:alpha="1"
            motion:layout_constraintBottom_toTopOf="@id/containerActionButtons"
            motion:layout_constraintTop_toBottomOf="@id/toolbarBuyerOrderDetail" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/show_content_without_sticky_button">
        <Constraint
            android:id="@+id/swipeRefreshBuyerOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:alpha="1"
            motion:layout_constraintBottom_toTopOf="@id/containerActionButtons"
            motion:layout_constraintTop_toBottomOf="@id/toolbarBuyerOrderDetail" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/show_content_error_state_intermediary">
        <Constraint
            android:id="@+id/containerActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/swipeRefreshBuyerOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="@id/containerActionButtons"
            motion:layout_constraintTop_toBottomOf="@id/toolbarBuyerOrderDetail" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/error_state_loading_intermediary">
        <Constraint
            android:id="@+id/globalErrorBuyerOrderDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/toolbarBuyerOrderDetail" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/error_state">
        <Constraint
            android:id="@+id/globalErrorBuyerOrderDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/toolbarBuyerOrderDetail" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/show_content_empty_state_error_intermediary">
        <Constraint
            android:id="@+id/containerActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/swipeRefreshBuyerOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="@id/containerActionButtons"
            motion:layout_constraintTop_toBottomOf="@id/toolbarBuyerOrderDetail" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/empty_state_error_loading_intermediary">
        <Constraint
            android:id="@+id/emptyStateBuyerOrderDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/toolbarBuyerOrderDetail" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/empty_state_error">
        <Constraint
            android:id="@+id/emptyStateBuyerOrderDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/toolbarBuyerOrderDetail" />
    </ConstraintSet>

    <!--  Transitions from initial state to loading state  -->
    <Transition
        android:id="@+id/buyerOrderDetailInitialToLoading"
        motion:constraintSetEnd="@+id/loading"
        motion:constraintSetStart="@+id/initial"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />

    <!--  Transition from loading state to show content with sticky button  -->
    <Transition
        android:id="@+id/buyerOrderDetailLoadingToShowContentWithStickyButton"
        motion:constraintSetEnd="@+id/show_content_with_sticky_button"
        motion:constraintSetStart="@+id/loading"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/swipeRefreshBuyerOrderDetail" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="0"
                motion:motionTarget="@+id/containerActionButtons" />
        </KeyFrameSet>
    </Transition>

    <!--  Transition from loading state to show content without sticky button  -->
    <Transition
        android:id="@+id/buyerOrderDetailLoadingToShowContentWithoutStickyButton"
        motion:constraintSetEnd="@+id/show_content_without_sticky_button"
        motion:constraintSetStart="@+id/loading"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/swipeRefreshBuyerOrderDetail" />
        </KeyFrameSet>
    </Transition>

    <!--  Transition from loading state to error state  -->
    <Transition
        android:id="@+id/buyerOrderDetailLoadingToErrorState"
        motion:constraintSetEnd="@+id/error_state"
        motion:constraintSetStart="@+id/loading"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/globalErrorBuyerOrderDetail" />
        </KeyFrameSet>
    </Transition>

    <!--  Transition from loading state to empty state error  -->
    <Transition
        android:id="@+id/buyerOrderDetailLoadingToEmptyStateError"
        motion:constraintSetEnd="@+id/empty_state_error"
        motion:constraintSetStart="@+id/loading"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/emptyStateBuyerOrderDetail" />
        </KeyFrameSet>
    </Transition>

    <!--  Transition from show content with sticky button to error state  -->
    <Transition
        android:id="@+id/buyerOrderDetailShowContentWithStickyButtonToErrorState"
        motion:constraintSetEnd="@+id/show_content_error_state_intermediary"
        motion:constraintSetStart="@+id/show_content_with_sticky_button"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/error_state"
        motion:constraintSetStart="@+id/show_content_error_state_intermediary"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/globalErrorBuyerOrderDetail" />
        </KeyFrameSet>
    </Transition>

    <!--  Transition from show content with sticky button to empty state error  -->
    <Transition
        android:id="@+id/buyerOrderDetailShowContentWithStickyButtonToEmptyStateError"
        motion:constraintSetEnd="@+id/show_content_empty_state_error_intermediary"
        motion:constraintSetStart="@+id/show_content_with_sticky_button"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/empty_state_error"
        motion:constraintSetStart="@+id/show_content_empty_state_error_intermediary"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="75"
                motion:motionTarget="@+id/emptyStateBuyerOrderDetail" />
        </KeyFrameSet>
    </Transition>

    <!--  Transition from show content with sticky button to show content without sticky button  -->
    <Transition
        android:id="@+id/buyerOrderDetailShowContentWithStickyButtonToShowContentWithoutStickyButton"
        motion:constraintSetEnd="@id/show_content_without_sticky_button"
        motion:constraintSetStart="@id/show_content_with_sticky_button"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />

    <!--  Transition from show content without sticky button to error state  -->
    <Transition
        android:id="@+id/buyerOrderDetailShowContentWithoutStickyButtonToErrorState"
        motion:constraintSetEnd="@+id/show_content_error_state_intermediary"
        motion:constraintSetStart="@+id/show_content_without_sticky_button"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />

    <!--  Transition from show content without sticky button to empty state error  -->
    <Transition
        android:id="@+id/buyerOrderDetailShowContentWithoutStickyButtonToEmptyStateError"
        motion:constraintSetEnd="@+id/show_content_empty_state_error_intermediary"
        motion:constraintSetStart="@+id/show_content_without_sticky_button"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />

    <!--  Transition from show content without sticky button to show content with sticky button  -->
    <Transition
        android:id="@+id/buyerOrderDetailShowContentWithoutStickyButtonToShowContentWithStickyButton"
        motion:constraintSetEnd="@id/show_content_with_sticky_button"
        motion:constraintSetStart="@id/show_content_without_sticky_button"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />

    <!--  Transition from error state to loading state  -->
    <Transition
        android:id="@+id/buyerOrderDetailErrorStateToErrorStateLoading"
        motion:constraintSetEnd="@+id/error_state_loading_intermediary"
        motion:constraintSetStart="@+id/error_state"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/loading"
        motion:constraintSetStart="@+id/error_state_loading_intermediary"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />

    <!--  Transition from empty state error to loading state  -->
    <Transition
        android:id="@+id/buyerOrderDetailEmptyStateErrorToEmptyStateErrorLoading"
        motion:constraintSetEnd="@+id/empty_state_error_loading_intermediary"
        motion:constraintSetStart="@+id/empty_state_error"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />
    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/loading"
        motion:constraintSetStart="@+id/empty_state_error_loading_intermediary"
        motion:duration="@integer/buyer_order_detail_motion_layout_duration_short" />
</MotionScene>