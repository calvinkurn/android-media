<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.buyerorderdetail">

    <application>
        <activity
            android:name=".presentation.activity.BuyerOrderDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BuyerOrderDetailActivityTheme"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:path="@string/path_order_revamped"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
    </application>
</manifest>