<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Space
        android:id="@+id/margin_spacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/dot_image"
        app:layout_constraintRight_toRightOf="@id/dot_image"
        app:layout_constraintLeft_toLeftOf="@id/dot_image"
        android:layout_marginBottom="@dimen/dp_10" />

    <View
        android:id="@+id/dot_trail_bottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/margin_spacer"
        app:layout_constraintStart_toStartOf="@+id/margin_spacer"
        app:layout_constraintTop_toBottomOf="@+id/margin_spacer" />

    <View
        android:id="@+id/dot_trail_top"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/margin_spacer"
        app:layout_constraintEnd_toEndOf="@+id/margin_spacer"
        app:layout_constraintStart_toStartOf="@+id/margin_spacer"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dot_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_dot_black" />

    <TextView
        android:id="@+id/history_title"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/history_date"
        app:layout_constraintStart_toEndOf="@+id/dot_image"
        app:layout_constraintTop_toTopOf="@+id/dot_image"
        tools:text="Loren Ipsum" />

    <TextView
        android:id="@+id/history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/history_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="20 Mei 2017" />

    <TextView
        android:id="@+id/history_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:textColor="@color/label_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/history_title"
        app:layout_constraintTop_toBottomOf="@id/history_title"
        tools:text="Loren Ipsum lasnlsandlsnaldsakndlsandlsanldnsalkdnlsandlksnalkdnlsakndlsandlknsalkdnlaksndlkasndlkaslkdnsalkndlkansdklnaldnalsndlasdlknsaldnlndsa" />

    <TextView
        android:id="@+id/history_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/history_description"
        app:layout_constraintTop_toBottomOf="@id/history_description"
        tools:text="Loren Ipsum lasnlsandlsnaldsakndlsandlsanldnsalkdnlsandlksnalkdnlsakndlsandlknsalkdnlaksndlkasndlkaslkdnsalkndlkansdklnaldnalsndlasdlknsaldnlndsa" />

</androidx.constraintlayout.widget.ConstraintLayout>