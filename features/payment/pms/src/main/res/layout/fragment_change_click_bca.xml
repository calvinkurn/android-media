<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/input_layout_click_bca_user_id"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:layout_alignParentTop="true"
        android:hint="@string/payment_label_hint_click_bca_user_id"
        app:helper="@string/payment_label_helper_change_click_bca">

        <EditText
            android:id="@+id/input_click_bca_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <Button
        android:id="@+id/button_use"
        style="@style/Button.Submit.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/payment_label_use" />


</RelativeLayout>