<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_3"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_2">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_product_type"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_10" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_N700_68"
                    app:typographyType="body_3"
                    android:layout_toRightOf="@id/image_product_type"
                    tools:text="8 Nov 2018"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_3"
                    app:typographyWeight="bold"
                    android:layout_alignLeft="@+id/tv_order_date"
                    android:layout_below="@+id/tv_order_date"
                    tools:text="Belanja"/>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_overflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selectable_background_tokopedia"
                    app:srcCompat="@drawable/ic_toolbar_overflow_level_two_black" />
            </RelativeLayout>

            <com.tokopedia.unifycomponents.DividerUnify
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"/>

            <LinearLayout
                android:id="@+id/container_due_date_payment"
                style="@style/PMS_CardWarningStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">


                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_due_payment_date"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_3"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    tools:text="Bayar sebelum 10 nov 2018, 18:00 WIB" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_payment"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_10" />


                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_total"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_N700_68"
                    app:typographyType="body_3"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/image_payment"
                    android:text="@string/payment_label_total" />


                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_value_total"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_Y500"
                    app:typographyType="body_2"
                    app:typographyWeight="bold"
                    android:layout_width="wrap_content"
                    android:layout_alignLeft="@+id/tv_total"
                    android:layout_below="@+id/tv_total"
                    android:layout_marginBottom="@dimen/dp_10"
                    tools:text="Rp. 200.000"/>


                <LinearLayout
                    android:id="@+id/container_detail_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_value_total"
                    android:layout_below="@id/tv_value_total"
                    android:orientation="vertical">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_payment_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:typographyType="body_3"
                        android:textColor="@color/Unify_N700_68"
                        tools:text="Kode Pembayaran" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_value_payment_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:typographyType="body_2"
                        android:textColor="@color/Unify_N700_96"
                        android:layout_marginBottom="@dimen/dp_10"
                        tools:text="2349ojasfdpaosfd09" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Unify_N700_68"
                        app:typographyType="body_3"
                        android:text="@string/payment_label_method_payment" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_value_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:typographyType="body_2"
                        android:textColor="@color/Unify_N700_96"
                        android:layout_marginBottom="@dimen/dp_10"
                        tools:text="2349ojasfdpaosfd09" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/container_detail_payment_bank_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_payment"
                    android:layout_marginTop="@dimen/dp_10"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/container_sender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/separator_vertical"
                        android:orientation="vertical"
                        android:layout_toStartOf="@+id/separator_vertical"
                        android:layout_alignParentStart="true">

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tv_label_sender_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:text="@string/payment_label_acc_sender" />

                        <com.tokopedia.unifyprinciples.Typography
                            app:typographyType="body_3"
                            app:typographyWeight="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Unify_N700_68"
                            android:id="@+id/tv_number_sender_account"
                            tools:text="****5555" />


                        <com.tokopedia.unifyprinciples.Typography
                            app:typographyType="body_3"
                            app:typographyWeight="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Unify_N700_68"
                            android:id="@+id/tv_name_sender_account"
                            tools:text="****5555" />
                    </LinearLayout>

                    <com.tokopedia.unifycomponents.DividerUnify
                        android:id="@+id/separator_vertical"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dp_60"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout
                        android:id="@+id/container_receiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/separator_vertical"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/separator_vertical"
                        android:layout_alignParentEnd="true">
                        <com.tokopedia.unifyprinciples.Typography
                            app:typographyType="body_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Unify_N700_68"
                            android:id="@+id/tv_label_receiver_account"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:text="@string/payment_label_acc_dest"  />


                        <com.tokopedia.unifyprinciples.Typography
                            app:typographyType="body_3"
                            app:typographyWeight="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Unify_N700_68"
                            android:id="@+id/tv_number_receiver_account"
                            tools:text="****5555" />


                        <com.tokopedia.unifyprinciples.Typography
                            app:typographyType="body_3"
                            app:typographyWeight="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Unify_N700_68"
                            android:id="@+id/tv_name_receiver_account"
                            tools:text="****5555" />

                    </LinearLayout>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_see_detail"
                    style="@style/TextView.Small.Green"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/payment_label_view_invoice" />

            </RelativeLayout>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/button_how_to_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unifyButtonType="main"
                app:unifyButtonVariant="filled"
                app:unifyButtonSize="large"
                android:text="@string/payment_label_how_to_pay" />


            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/button_cancel_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unifyButtonType="alternate"
                app:unifyButtonVariant="ghost"
                app:unifyButtonSize="large"
                android:text="@string/payment_label_cancel_transaction"
                android:visibility="visible" />

        </LinearLayout>

    </com.tokopedia.unifycomponents.CardUnify>
</LinearLayout>