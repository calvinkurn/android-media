<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/container_main_upload"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_format_image"
            android:layout_alignParentTop="true">

            <ScrollView
                android:id="@+id/container_help_upload_proof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/container_help_upload_fast_proof"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/unify_space_16">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/unify_space_8"
                        android:text="@string/payment_label_help_proof"
                        android:textColor="@color/Unify_N700_68"
                        app:typographyType="body_3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/unify_space_8">

                        <View
                            android:id="@+id/circle_green"
                            android:layout_width="@dimen/pms_dp_6"
                            android:layout_height="@dimen/pms_dp_6"
                            android:layout_margin="@dimen/pms_dp_7"
                            android:layout_marginRight="@dimen/pms_dp_5"
                            android:background="@drawable/pm_circle_green" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/label_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/unify_space_8"
                            android:layout_toRightOf="@+id/circle_green"
                            android:text="@string/payment_label_help_proof_date"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3"
                            app:typographyWeight="bold" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_date"
                            android:layout_alignLeft="@+id/label_date"
                            android:text="@string/payment_label_help_proof_example_date"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/unify_space_8">

                        <View
                            android:id="@+id/circle_green_2"
                            android:layout_width="@dimen/pms_dp_6"
                            android:layout_height="@dimen/pms_dp_6"
                            android:layout_margin="@dimen/pms_dp_7"
                            android:layout_marginRight="@dimen/pms_dp_5"
                            android:background="@drawable/pm_circle_green" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/label_date_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/unify_space_8"
                            android:layout_toRightOf="@+id/circle_green_2"
                            android:text="@string/payment_label_help_proof_success_status"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3"
                            app:typographyWeight="bold" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_date_2"
                            android:layout_alignLeft="@+id/label_date_2"
                            android:text="@string/payment_label_help_proof_example_success_status"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/unify_space_8">

                        <View
                            android:id="@+id/circle_green_3"
                            android:layout_width="@dimen/pms_dp_6"
                            android:layout_height="@dimen/pms_dp_6"
                            android:layout_margin="@dimen/pms_dp_7"
                            android:layout_marginRight="@dimen/pms_dp_5"
                            android:background="@drawable/pm_circle_green" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/label_date_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/unify_space_8"
                            android:layout_toRightOf="@+id/circle_green_3"
                            android:text="@string/payment_label_help_proof_receiver"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3"
                            app:typographyWeight="bold" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_date_3"
                            android:layout_alignLeft="@+id/label_date_3"
                            android:text="@string/payment_label_help_proof_example_receiver"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/unify_space_8">

                        <View
                            android:id="@+id/circle_green_4"
                            android:layout_width="@dimen/pms_dp_6"
                            android:layout_height="@dimen/pms_dp_6"
                            android:layout_margin="@dimen/pms_dp_7"
                            android:layout_marginRight="@dimen/pms_dp_5"
                            android:background="@drawable/pm_circle_green" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/label_date_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/unify_space_8"
                            android:layout_toRightOf="@+id/circle_green_4"
                            android:text="@string/payment_label_help_proof_total_transfer"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3"
                            app:typographyWeight="bold" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_date_4"
                            android:layout_alignLeft="@+id/label_date_4"
                            android:text="@string/payment_label_help_proof_example_total"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/container_help_upload_fast_proof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/unify_space_16"
                android:background="@color/Unify_N50"
                android:padding="@dimen/unify_space_8">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/payment_label_help_upload_proof"
                    android:textColor="@color/Unify_N700_68"
                    app:typographyType="body_3" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_image_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_format_image"
            android:padding="@dimen/unify_space_16"
            android:visibility="gone"
            tools:visibility="gone">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/payment_label_confirmation_upload_image"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_2" />

            <FrameLayout
                android:id="@+id/container_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/text_confirmation">

                <ImageView
                    android:id="@+id/image_payment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/pms_dp_10"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_coupon_image" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/iv_action_image"
                    android:layout_width="@dimen/unify_space_24"
                    android:layout_height="@dimen/unify_space_24"
                    android:layout_gravity="top|end"
                    android:background="@drawable/pm_circle_white"
                    android:padding="@dimen/pms_dp_5"
                    app:icon_color_light_disabled="@color/Unify_G500"
                    app:icon_color_light_enable="@color/Unify_G500"
                    app:icon_color_night_disabled="@color/Unify_G500"
                    app:icon_color_night_enable="@color/Unify_G500"
                    app:icon_name="CHECK_BIG" />
            </FrameLayout>
        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_format_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_save_choose_another_image"
            android:layout_centerHorizontal="true"
            android:text="@string/payment_label_format_image"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_2" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_save_choose_another_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_save"
            android:layout_marginLeft="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginRight="@dimen/unify_space_16"
            android:layout_marginBottom="@dimen/unify_space_8"
            android:maxHeight="52dp"
            android:text="@string/payment_label_choose_another_image"
            android:visibility="gone"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginRight="@dimen/unify_space_16"
            android:layout_marginBottom="@dimen/unify_space_8"
            android:text="@string/payment_label_choose_image"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>