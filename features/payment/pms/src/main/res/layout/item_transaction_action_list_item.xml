<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ivAction"
        android:layout_width="@dimen/pms_dp_20"
        android:layout_height="@dimen/pms_dp_20"
        app:icon_name="UPLOAD"
        app:layout_constraintBottom_toBottomOf="@+id/tvActionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvActionTitle" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvActionTitle"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivAction"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700_96"
        android:text="@string/payment_label_cancel_transaction" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/itemDivider"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/unify_space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivAction"
        app:layout_constraintTop_toBottomOf="@+id/tvActionTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>