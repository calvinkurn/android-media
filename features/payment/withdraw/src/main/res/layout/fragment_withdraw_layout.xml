<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_ticker"
            android:visibility="gone"
            layout="@layout/layout_holdwithdrawl_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_8">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/main_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/saldo_type_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:elevation="@dimen/dp_3"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        app:cardCornerRadius="@dimen/dp_4"
                        app:cardElevation="@dimen/dp_3"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_16">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/saldo_retrieve_balance"
                                android:textColor="#ae31353b"
                                android:textSize="@dimen/sp_14" />

                            <ImageView
                                android:id="@+id/saldo_withdraw_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:visibility="invisible"
                                app:srcCompat="@drawable/ic_more_info" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/saldo_withdraw_info"
                                android:layout_marginTop="@dimen/dp_16"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/withdraw_refund_saldo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dp_8"
                                    android:layout_marginRight="@dimen/dp_8"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_green_filled_radius_16"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/dp_8"
                                    android:paddingBottom="@dimen/dp_8"
                                    android:text="@string/refund"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/withdraw_seller_saldo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_8"
                                    android:layout_marginLeft="@dimen/dp_8"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_grey_border_radius_16"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/dp_8"
                                    android:paddingBottom="@dimen/dp_8"
                                    android:text="@string/saldo_return" />

                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:elevation="@dimen/dp_3"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        app:cardCornerRadius="@dimen/dp_4"
                        app:cardElevation="@dimen/dp_3"
                        app:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_12">

                            <TextView
                                android:id="@+id/saldo_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/saldo_refund"
                                android:textColor="@color/black_70"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/total_saldo_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_toEndOf="@+id/saldo_title"
                                android:layout_toRightOf="@+id/saldo_title"
                                android:gravity="end"
                                android:lineSpacingExtra="@dimen/sp_4"
                                android:textColor="@color/black_70"
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold"
                                tools:text="Rp5.000.000" />

                            <View
                                android:id="@+id/view_divider"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_below="@id/saldo_title"
                                android:layout_marginStart="@dimen/dp_1"
                                android:layout_marginLeft="@dimen/dp_1"
                                android:layout_marginTop="@dimen/dp_16"
                                android:layout_marginEnd="@dimen/dp_1"
                                android:layout_marginRight="@dimen/dp_1"
                                android:background="@color/grey_300" />

                            <TextView
                                android:id="@+id/title_nominal_withdrawal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/view_divider"
                                android:layout_marginTop="@dimen/dp_16"
                                android:lineSpacingExtra="@dimen/sp_4"
                                android:text="@string/nominal_withdrawal"
                                android:textColor="@color/black_40"
                                android:textSize="@dimen/sp_12" />


                            <TextView
                                android:id="@+id/withdrawal_all_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/view_divider"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/dp_16"
                                android:lineSpacingExtra="@dimen/sp_4"
                                android:text="@string/saldo_withdrawal_all"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/sp_12" />

                            <com.tokopedia.design.text.TkpdHintTextInputLayout
                                android:id="@+id/wrapper_total_withdrawal"
                                style="@style/HintTextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/title_nominal_withdrawal"
                                android:layout_marginTop="@dimen/dp_8"
                                android:hint=""
                                android:textColorHint="@color/grey">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/total_withdrawal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberSigned"
                                    android:textSize="@dimen/sp_16" />
                            </com.tokopedia.design.text.TkpdHintTextInputLayout>

                            <TextView
                                android:id="@+id/saldo_withdraw_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/wrapper_total_withdrawal"
                                android:layout_marginTop="@dimen/dp_5"
                                android:lineSpacingExtra="@dimen/sp_4"
                                android:text="@string/saldo_withdraw_hint"
                                android:textColor="@color/grey_500"
                                android:textSize="@dimen/sp_12" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_16">

                        <TextView
                            android:id="@+id/title_choose_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="10sp"
                            android:paddingTop="@dimen/dp_8"
                            android:text="@string/choose_bank_account"
                            android:textColor="@color/black_70"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_choose_bank"
                            android:paddingTop="@dimen/dp_3">

                        </androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>


                </LinearLayout>

            </ScrollView>

            <include
                android:id="@+id/loading_layout"
                layout="@layout/loading_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/custom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/button_curvy_green"
            android:gravity="center"
            android:minHeight="@dimen/dp_48"
            android:padding="@dimen/dp_8">

            <ImageView
                android:id="@+id/ivButtonLeft"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_8"
                app:srcCompat="@drawable/ic_icon_lock"
                android:visibility="gone"
                android:tint="#abadb1"
              />

            <TextView
                android:id="@+id/withdraw_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sp_11"
                android:text="@string/title_action_withdraw"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/ll_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/sp_5"
                android:text="@string/saldolock_info_text"
                android:textColor="@color/black_40"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                tools:visibility="visible"/>

        </RelativeLayout>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>