<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/radio"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/swd_radio_button_default" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:enabled="false"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/radio"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/radio"
        android:textColor="@color/grey_796"
        app:typographyType="body_3"
        tools:text="PT BANK CENTRAL ASIA TBK" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/bank_acc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_name"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/radio"
        android:ellipsize="marquee"
        android:lineSpacingExtra="@dimen/sp_4"
        android:singleLine="true"
        app:typographyType="body_3"
        android:textColor="@color/grey_button_compat"
        android:textSize="@dimen/sp_12"
        tools:text="5678908730 • Alexandra " />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvAdminFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_acc_name"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/radio"
        android:ellipsize="marquee"
        android:lineSpacingExtra="@dimen/sp_4"
        android:singleLine="true"
        app:typographyType="body_3"
        android:textColor="@color/black_40"
        android:textSize="@dimen/sp_12"
        tools:text="5678908730 • Alexandra " />


</RelativeLayout>