<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_8"
                android:text="@string/dot"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dot"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/title_info_withdrawal_1"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/body_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/title_1"
                android:layout_below="@id/title_1"
                android:text="@string/body_1"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_8"
                android:text="@string/dot"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dot_2"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/title_info_withdrawal_2"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/body_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/title_2"
                android:layout_below="@id/title_2"
                android:text="@string/body_info_withdrawal_2"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/dot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_8"
                android:text="@string/dot"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dot_3"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/title_info_withdrawal_3"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/body_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/title_3"
                android:layout_below="@id/title_3"
                android:text="@string/body_info_withdrawal_3"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/dot_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_8"
                android:text="@string/dot"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/title_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dot_4"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/title_info_withdrawal_4"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>