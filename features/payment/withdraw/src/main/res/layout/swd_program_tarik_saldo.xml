<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_16"
            android:tint="@color/black_38"
            app:srcCompat="@drawable/swd_ic_close_button" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_closeable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_8"
            android:paddingStart="@dimen/dp_8"
            android:textColor="@color/clr_f531353b"
            android:textStyle="normal"
            app:typographyType="heading_4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_24"
        android:paddingLeft="@dimen/dp_24"
        android:paddingEnd="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_header">

        <ImageView
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:layout_gravity="center"
            android:src="@drawable/swd_prgrm_withdrawal" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_wdProgramTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/sp_4"
            android:text="@string/swd_program_tarik_saldo"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_12"
            app:typographyType="heading_2" />

        <TextView
            android:id="@+id/tv_wdProgramDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/sp_6"
            android:textColor="@color/unify_N700_44"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/wdProgramContinue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/swd_btn_bg_green_curved_corners"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:text="@string/continue_pull"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>


