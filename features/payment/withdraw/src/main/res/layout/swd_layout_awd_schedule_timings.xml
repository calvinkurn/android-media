<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvScheduleTiming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnUpdateSchedule"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:text="@string/swd_auto_wd_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginBottom="@dimen/unify_space_16"
        app:layout_constraintTop_toBottomOf="@id/rvScheduleTiming"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />
</androidx.constraintlayout.widget.ConstraintLayout>
