<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/btnMoreInfo"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/unify_space_16"
        android:paddingBottom="@dimen/unify_space_24"
        android:text="@string/swd_more_info"
        android:textColor="@color/Unify_G500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDivider"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/unify_space_24"
        app:layout_constraintTop_toBottomOf="@+id/rvAutoWDInfo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAutoWDInfo"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/awdJoinRPTicker" />

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/awdJoinRPTicker"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        app:closeButtonVisibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerShapeType="loose"
        app:tickerType="announcement" />

</androidx.constraintlayout.widget.ConstraintLayout>