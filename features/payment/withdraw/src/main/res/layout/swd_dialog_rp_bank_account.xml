<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/unify_space_24">


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPremiumAccountInfoTitle"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:text="@string/swd_premium_account_info_title"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toBottomOf="@id/ivRpIcon"
        app:layout_constraintEnd_toStartOf="@id/ivRpIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivRpIcon"
        app:typographyType="heading_3"
        app:typographyWeight="bold" />


    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivRpIcon"
        android:layout_width="@dimen/swd_rp_icon_width"
        android:layout_height="@dimen/swd_rp_icon_width"
        android:background="@drawable/swd_ic_rp_bg"
        android:padding="@dimen/unify_space_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/swd_ic_power_merchant"
        app:unify_image_corner_radius="0" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPremiumAccountInfoLineOne"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:text="@string/swd_premium_account_info_line_one"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPremiumAccountInfoTitle"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPremiumAccountInfoLineTwo"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_8"
        android:text="@string/swd_premium_account_info_line_Two"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPremiumAccountInfoLineOne"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPremiumAccountInfoLineThree"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_8"
        android:text="@string/swd_premium_account_info_line_Three"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPremiumAccountInfoLineTwo"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMoreInfo"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:text="@string/swd_more_info"
        android:textColor="@color/Unify_G500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPremiumAccountInfoLineThree"
        app:typographyType="body_2" />


    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnJoinPremiumAccount"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:text="@string/swd_join_premium_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMoreInfo"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />


</androidx.constraintlayout.widget.ConstraintLayout>