<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivJoinRekening"
            android:layout_width="@dimen/swd_de_active_account_width"
            android:layout_height="@dimen/swd_de_active_account_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/swd_img_join_rekening"
            app:unify_image_corner_radius="0" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvJoinRekeningTitle"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_12"
            android:gravity="center"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivJoinRekening"
            app:typographyType="heading_2"
            app:typographyWeight="bold"
            tools:text="Title" />

        <LinearLayout
            android:id="@+id/descriptionBulletContainer"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_24"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvJoinRekeningTitle" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnJoinRPAndWithdrawal"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_24"
            android:text="@string/swd_withdrawand_join"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionBulletContainer"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnWithdrawalOnly"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_12"
            android:text="@string/swd_withdrawal_only"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnJoinRPAndWithdrawal"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvJoinRekeningTNC"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_24"
            android:layout_marginBottom="@dimen/unify_space_24"
            android:gravity="center"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWithdrawalOnly"
            app:typographyType="body_3"
            tools:text="Description" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>