<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item> <!--Your outer blue border shape-->
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />

            <size
                android:width="@dimen/dp_25"
                android:height="@dimen/dp_25" />

            <stroke
                android:width="2dp"
                android:color="@color/medium_green" />
        </shape>
    </item>
    <!--Your inner blue Solid circle shape-->
    <item android:bottom="@dimen/dp_4"
        android:left="@dimen/dp_4"
        android:right="@dimen/dp_4"
        android:top="@dimen/dp_4">
        <shape android:shape="oval">
            <solid android:color="@color/medium_green" />
        </shape>
    </item>
</layer-list>
