<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/counterCreditCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/unify_space_16"
        app:typographyType="body_2"
        tools:text="@string/payment_label_saved_card" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/unify_space_16" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerListPayment"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:id="@+id/authenticateCreditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/unify_space_16">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/payment_label_auth_credit_card"
            android:textColor="@color/Unify_N700"
            app:typographyType="heading_4" />

        <com.tokopedia.iconunify.IconUnify
            android:layout_width="@dimen/unify_space_24"
            android:layout_height="@dimen/unify_space_24"
            android:layout_gravity="center_vertical"
            app:icon_name="CHEVRON_RIGHT" />

    </LinearLayout>
</LinearLayout>