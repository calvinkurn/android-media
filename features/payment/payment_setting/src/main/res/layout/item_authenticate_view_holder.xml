<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_3"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="@dimen/dp_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleAuthenticate"
                style="@style/TextView.Small.Bold.BlackSecondary"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_toLeftOf="@+id/radioSelectedAuth"
                tools:text="Verifikasi oleh Tokopedia" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioSelectedAuth"
                style="@style/RadioButton.Big"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_toLeftOf="@+id/radioSelectedAuth"
                android:id="@+id/descriptionAuthType"
                style="@style/TextView.Micro.BlackSecondary"
                android:layout_below="@+id/titleAuthenticate"
                android:text="Anda akan diminta memasukkan angka CVV disetiap transaksi. Verifikasi via SMS atau sidik jari hanya diperlukan untuk transaksi tertentu." />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>