<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:paddingLeft="@dimen/unify_space_4"
    android:paddingRight="@dimen/unify_space_4">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/unify_space_16"
        app:card_type="shadow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/titleAuthenticate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/unify_space_8"
                android:layout_marginBottom="@dimen/unify_space_12"
                android:layout_toStartOf="@+id/radioSelectedAuth"
                android:textColor="@color/Unify_N700"
                app:typographyType="heading_4"
                app:typographyWeight="bold"
                tools:text="Verifikasi oleh Tokopedia" />

            <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
                android:id="@+id/radioSelectedAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/unify_space_4" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/descriptionAuthType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleAuthenticate"
                android:layout_toStartOf="@+id/radioSelectedAuth"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_2"
                tools:text="Anda akan diminta memasukkan angka CVV disetiap transaksi. Verifikasi via SMS atau sidik jari hanya diperlukan untuk transaksi tertentu." />
        </RelativeLayout>
    </com.tokopedia.unifycomponents.CardUnify>
</FrameLayout>