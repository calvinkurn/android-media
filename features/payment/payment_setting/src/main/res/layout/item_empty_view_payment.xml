<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.unifycomponents.ImageUnify
            android:paddingTop="@dimen/unify_space_16"
            android:paddingBottom="@dimen/unify_space_16"
            android:paddingEnd="@dimen/unify_space_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_empty_payment_list"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Untuk kemudahan pembayaran kartu kredit / debit online, simpan informasi kartu kredit / debit online anda,"
            app:typographyType="body_2"
            android:textColor="@color/Unify_N700_68"
            />


    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/buttonAddCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_label_button_add_card"
        android:layout_marginTop="@dimen/unify_space_16"
        app:unifyButtonVariant="filled"
        app:unifyButtonSize="large"
        app:unifyButtonType="main" />
</LinearLayout>