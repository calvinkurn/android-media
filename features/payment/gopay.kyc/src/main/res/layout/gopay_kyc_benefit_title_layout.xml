<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/go_pay_kyc_dp_31"
    android:orientation="horizontal"
    android:background="@drawable/bg_gopay_benefit_table_header">

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_gopay_white_icon"
        android:paddingHorizontal="@dimen/go_pay_kyc_dp_30"
        android:paddingVertical="@dimen/go_pay_kyc_dp_11"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/go_pay_kyc_dp_30"
        android:paddingVertical="@dimen/go_pay_kyc_dp_11"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_gopay_black_icon"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_gopay_benefit_blue_table_header">

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/go_pay_kyc_dp_30"
            android:paddingVertical="@dimen/go_pay_kyc_dp_11"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_gopay_white_icon"
            app:unify_image_corner_radius="0"
            app:unify_image_type="rect" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>