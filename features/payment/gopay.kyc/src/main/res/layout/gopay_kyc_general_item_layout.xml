<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/goKycBenefitParentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/gopayKycBenefitRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <View
            android:id="@+id/verticalLineView"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_outline" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/goPayBenefitTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingStart="@dimen/go_pay_kyc_dp_12"
            android:paddingEnd="@dimen/go_pay_kyc_dp_31"
            android:paddingVertical="@dimen/go_pay_kyc_dp_12"
            android:textColor="@color/Unify_NN950"
            app:typographyType="display_3"
            tools:text="Batas Saldo"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/goPayBenefit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/go_pay_kyc_dp_8"
            android:paddingVertical="@dimen/go_pay_kyc_dp_8"
            tools:text="Rp1.00.00"
            android:textColor="@color/Unify_NN600"
            app:typographyType="display_3"
            android:layout_gravity="center"
            android:textAlignment="center"
            />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/goPayBenefitLL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/goPayBenefitCancelImage"
            android:layout_height="@dimen/go_pay_kyc_dp_20"
            android:layout_width="@dimen/go_pay_kyc_dp_20"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_cancel_icon"
            app:unify_image_corner_radius="0"
            app:unify_image_type="circle"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/goPayPlusBenefitLL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_gopay_benefit_plus_column"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/goPayPlusBenefit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/go_pay_kyc_dp_8"
                android:paddingVertical="@dimen/go_pay_kyc_dp_8"
                tools:text="Rp1.00.00"
                android:textColor="@color/Unify_NN950"
                app:typographyType="display_3"
                android:layout_gravity="center"
                android:textAlignment="center"
                app:typographyWeight="bold" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/goPayPlusBenefitImage"
                android:layout_width="@dimen/go_pay_kyc_dp_20"
                android:layout_height="@dimen/go_pay_kyc_dp_20"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_tick_icon"
                app:unify_image_corner_radius="0"
                app:unify_image_type="circle"
                android:visibility="gone"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/go_pay_kyc_dp_1"
        android:background="@color/grey_outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gopayKycBenefitRow" />

</androidx.constraintlayout.widget.ConstraintLayout>