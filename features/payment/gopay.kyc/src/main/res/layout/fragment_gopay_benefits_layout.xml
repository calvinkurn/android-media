<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_NN0"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/benefitCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/goPayHeaderBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/go_pay_kyc_dp_158"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unify_image_corner_radius="0"
            app:unify_image_type="rect" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/goPayPlusImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/go_pay_kyc_dp_27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_gopay_plus"
            app:unify_image_corner_radius="0"
            app:unify_image_type="rect" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/goPayBenefitHeaderTitle"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="@string/gopay_kyc_benefit_header_title_text"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/goPayPlusImage"
            app:layout_constraintTop_toBottomOf="@id/goPayPlusImage"
            app:typographyType="heading_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/goPayBenefitDescriptionText"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginBottom="@dimen/unify_space_24"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="@string/gopay_kyc_benefit_header_description_text"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/goPayBenefitHeaderTitle"
            app:layout_constraintTop_toBottomOf="@+id/goPayBenefitHeaderTitle"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/goPayBenefitTitleText"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/unify_space_16"
            android:layout_marginVertical="@dimen/unify_space_16"
            android:text="@string/gopay_kyc_benefit_title_text"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goPayHeaderBackground"
            app:typographyType="display_2"
            app:typographyWeight="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goPayBenefitRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goPayBenefitTitleText" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/upgradeNowButton"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_24"
            android:layout_marginBottom="@dimen/unify_space_24"
            android:text="@string/gopay_kyc_upgrade_now"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/goPayBenefitRV"
            app:layout_constraintStart_toStartOf="@+id/goPayBenefitRV"
            app:layout_constraintTop_toBottomOf="@+id/goPayBenefitRV"
            app:layout_constraintVertical_bias="1.0"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>