<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_topay_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TopPayActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/holder_top"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@drawable/bg_toolbar_drop_shadow">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/spacing_lvl4"
            app:icon_name="ARROW_BACK"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1,1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="?android:actionBarSize"
            android:paddingEnd="?android:actionBarSize"
            android:text="@string/app_name"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_3"
            app:typographyWeight="reguler" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.webview.TkpdWebView
        android:id="@+id/scrooge_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/holder_top" />

        <com.tokopedia.unifycomponents.LoaderUnify
                 android:layout_height="60dp"
                 android:layout_width="60dp"
                android:id="@+id/loaderCreditCardUnify"
               android:layout_centerInParent="true"
            android:visibility="gone"
            tools:visibility="visible"
                app:loader_type="circular"/>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/holder_top"
        android:layout_marginTop="-6dp"
        android:max="100" />
</RelativeLayout>