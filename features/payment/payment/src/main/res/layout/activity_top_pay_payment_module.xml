<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TopPayActivity">

    <RelativeLayout
        android:id="@+id/holder_top"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@drawable/bg_toolbar_drop_shadow">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btn_back"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:padding="@dimen/spacing_lvl4"
            app:icon_name="ARROW_BACK" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/btn_back"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="?android:actionBarSize"
            android:text="@string/app_name"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_3"
            app:typographyWeight="reguler"
            tools:ignore="RtlSymmetry" />
    </RelativeLayout>

    <WebView
        android:id="@+id/scrooge_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/holder_top" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/holder_top"
        android:layout_marginTop="-6dp"
        android:max="100" />
</RelativeLayout>