<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/spacing_lvl5"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvFeatureTitle"
        android:layout_width="0dp"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        tools:text="Title"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvFeatureDescription"
        android:layout_width="0dp"
        app:typographyType="paragraph_2"
        android:textColor="@color/Unify_NN600"
        tools:text="Title"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:layout_constraintTop_toBottomOf="@id/tvFeatureTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:orientation="horizontal"
        android:paddingStart="@dimen/unify_space_16"
        android:clipToPadding="false"
        tools:listitem="@layout/thanks_item_top_ads_view"
        app:layout_constraintTop_toBottomOf="@id/tvFeatureDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
