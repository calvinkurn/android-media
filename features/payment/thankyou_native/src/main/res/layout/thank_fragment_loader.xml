<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0"
    android:orientation="vertical">

    <com.tokopedia.thankyou_native.presentation.views.ThankYouLoadingView
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvWaitForMinute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="heading_3"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/loading_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="@string/thank_wait_for_minute"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvProcessingPayment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:textColor="@color/Neutral_N700_68"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/tvWaitForMinute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="@string/thank_processing_payment"/>


    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/globalError"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>