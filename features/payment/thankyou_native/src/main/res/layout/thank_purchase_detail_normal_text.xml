<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pdSlashedPrice"
        android:gravity="center_vertical"
        android:layout_marginEnd="4dp">
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/pdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="paragraph_3"
            app:typographyWeight="reguler"
            android:textColor="@color/Unify_NN600"
            android:paddingEnd="20dp"
            tools:text="Biaya Tambahan "/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/pdTooltipIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:icon_name="INFORMATION"
            android:layout_marginStart="-20dp"/>
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdSlashedPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN400"
        android:layout_marginEnd="4dp"
        app:typographyType="paragraph_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pdTotalPrice"
        tools:text="Rp.800.000"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:typographyType="paragraph_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Rp.800.000"/>

</androidx.constraintlayout.widget.ConstraintLayout>