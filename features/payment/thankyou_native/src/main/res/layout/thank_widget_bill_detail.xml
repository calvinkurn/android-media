<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_12">

    <View
        android:id="@+id/dividerTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/Neutral_N75"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceTotalBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/thank_invoice_total_bill"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceTotalBillValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="end"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvInvoiceTotalBill"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="RP2323234423" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceServiceTax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/thank_invoice_service_fee"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInvoiceTotalBill"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceServiceTaxValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="end"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvInvoiceServiceTax"
        app:layout_constraintTop_toBottomOf="@id/tvInvoiceTotalBill"
        app:typographyType="body_3"
        tools:text="RP2323234423" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceUsedTokopoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInvoiceServiceTax"
        app:typographyType="body_3"
        tools:text="@string/thank_invoice_used_tokopoint" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceUsedTokopointsValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="end"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvInvoiceUsedTokopoints"
        app:layout_constraintTop_toBottomOf="@id/tvInvoiceServiceTax"
        app:typographyType="body_3"
        tools:text="- RP2323234423" />


</androidx.constraintlayout.widget.ConstraintLayout>