<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopName"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Shop Name" />

    <LinearLayout
        android:id="@+id/llShopItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvInvoiceShopName" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopDiscount"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/thank_invoice_item_discount"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llShopItemContainer"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopDiscountValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvInvoiceShopDiscount"
        app:layout_constraintTop_toTopOf="@+id/tvInvoiceShopDiscount"
        app:typographyType="body_3"
        tools:text="Rp12345678" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopItemProtection"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/thank_invoice_item_protection"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInvoiceShopDiscount"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopItemProtectionValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvInvoiceShopItemProtection"
        app:layout_constraintTop_toTopOf="@+id/tvInvoiceShopItemProtection"
        app:typographyType="body_3"
        tools:text="Rp12345678" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupShipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tvInvoiceShopItemShipping, tvInvoiceShopItemShippingValue, tvInvoiceShopItemCourier, tvInvoiceShopItemShippingDiscount, tvInvoiceShopItemShippingDiscountValue, tvInvoiceShopItemShippingInsurance, tvInvoiceShopItemShippingInsuranceValue, llAddOnContainer, tvInvoiceShopShippingAddress, tvInvoiceShopShippingAddressValue"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopItemShipping"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/thank_invoice_item_shipping_fee"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInvoiceShopItemProtection"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopItemShippingValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvInvoiceShopItemShipping"
        app:layout_constraintTop_toTopOf="@+id/tvInvoiceShopItemShipping"
        app:typographyType="body_3"
        tools:text="Rp12345678" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopItemCourier"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInvoiceShopItemShipping"
        app:typographyType="body_3"
        tools:text="Shipping From" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopItemShippingDiscount"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/thank_invoice_item_shipping_discount"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInvoiceShopItemCourier"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopItemShippingDiscountValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvInvoiceShopItemShippingDiscount"
        app:layout_constraintTop_toTopOf="@+id/tvInvoiceShopItemShippingDiscount"
        app:typographyType="body_3"
        tools:text="Rp12345678" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopItemShippingInsurance"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/thank_invoice_item_shipping_insurance"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInvoiceShopItemShippingDiscount"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopItemShippingInsuranceValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvInvoiceShopItemShippingInsurance"
        app:layout_constraintTop_toTopOf="@+id/tvInvoiceShopItemShippingInsurance"
        app:typographyType="body_3"
        tools:text="Rp12345678" />

    <LinearLayout
        android:id="@+id/llAddOnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvInvoiceShopItemShippingInsurance" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopShippingAddress"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/thank_invoice_item_shipping_address"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llAddOnContainer"
        app:typographyType="body_2"
        app:typographyWeight="bold" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvInvoiceShopShippingAddressValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInvoiceShopShippingAddress"
        app:typographyType="body_3"
        tools:text="Shipping Address" />

    <Space
        android:id="@+id/spaceShipping"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvInvoiceShopShippingAddressValue"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerShopShipping"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceShipping"/>


</androidx.constraintlayout.widget.ConstraintLayout>