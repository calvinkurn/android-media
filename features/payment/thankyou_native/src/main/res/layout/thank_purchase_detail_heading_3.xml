<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:typographyType="paragraph_3"
        app:typographyWeight="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Total Bayar"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdNameSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="2dp"
        app:typographyType="paragraph_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/pdName"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Tokopedia Tower Lantai 46 - Ciputra World 2 Jalan Prof dr satrio, No Kav. 11, Jakarta Selatan"/>

</androidx.constraintlayout.widget.ConstraintLayout>