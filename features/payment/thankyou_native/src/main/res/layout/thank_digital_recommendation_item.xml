<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/thank_digital_recom_width"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/layout_lvl1"
    app:cardElevation="@dimen/spacing_lvl2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/thanks_digital_recommendation_card_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/thanks_digital_recom_bg"
        android:minHeight="@dimen/layout_lvl8">

        <ImageView
            android:id="@+id/thanks_dg_rec_image"
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:scaleType="fitStart"
            android:contentDescription="@null"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/layout_lvl1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/thanks_dh_rec_name"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl1"
            android:layout_marginEnd="@dimen/layout_lvl1"
            android:gravity="top"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintLeft_toRightOf="@id/thanks_dg_rec_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/thanks_dg_rec_image"
            app:typographyType="heading_5" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/thanks_dg_rec_text_sub"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl1"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thanks_dg_rec_image"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/thanks_dg_rec_text_desc"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl1"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/thanks_dg_rec_text_sub"
            app:typographyType="body_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>
