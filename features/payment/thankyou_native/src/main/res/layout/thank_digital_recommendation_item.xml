<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/spacing_lvl4"
    android:layout_marginRight="@dimen/spacing_lvl4"
    android:layout_marginBottom="@dimen/spacing_lvl4"
    app:cardCornerRadius="@dimen/layout_lvl1"
    app:cardElevation="0dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/thanks_digital_recommendation_card_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="110dp">

            <ImageView
                android:id="@+id/thanks_dg_rec_card_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_thanks_dg_rec"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_green_toolbar_drop_shadow" />

            <ImageView
                android:id="@+id/thanks_dg_rec_image"
                android:layout_width="@dimen/layout_lvl7"
                android:layout_height="@dimen/layout_lvl7"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/thanks_dh_rec_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginRight="@dimen/spacing_lvl3"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/thanks_dg_rec_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/thanks_dg_rec_text_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:layout_marginRight="@dimen/spacing_lvl3"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/thanks_dg_rec_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/thanks_dh_rec_name"
                app:typographyType="body_3" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_thanks_dg_rec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_lvl3"
                android:text="thanks_digital"
                app:layout_constraintLeft_toRightOf="@id/thanks_dg_rec_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/thanks_dg_rec_text_sub"
                app:unifyButtonSize="small"
                app:unifyButtonType="transaction" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
