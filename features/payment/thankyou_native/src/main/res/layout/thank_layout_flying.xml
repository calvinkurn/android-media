<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Neutral_N0">

    <ImageView
        android:id="@+id/mainBackground"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        tools:src="@drawable/thanks_img_bg_clouds"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        tools:src="@drawable/thanks_img_cloud"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/mainBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character"
        android:layout_width="300dp"
        android:layout_height="189dp"
        android:layout_marginTop="120dp"
        android:padding="30dp"
        android:scaleType="fitStart"
        tools:src="@drawable/thanks_img_characters"
        app:layout_constraintBottom_toBottomOf="@+id/mainBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eyes"
        android:layout_width="200dp"
        android:layout_height="123dp"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="33dp"
        android:scaleType="fitStart"
        tools:src="@drawable/thanks_img_open_eyes"
        app:layout_constraintStart_toStartOf="@+id/character"
        app:layout_constraintTop_toTopOf="@+id/character" />

    <ImageView
        android:id="@+id/coinOne"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        tools:src="@drawable/thanks_flat_coin"
        app:layout_constraintBottom_toTopOf="@+id/cloud"
        app:layout_constraintStart_toStartOf="@+id/mainBackground" />

    <ImageView
        android:id="@+id/coinTwo"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="30dp"
        tools:src="@drawable/thanks_flat_coin"
        app:layout_constraintBottom_toTopOf="@+id/cloud"
        app:layout_constraintStart_toStartOf="@+id/mainBackground" />

    <ImageView
        android:id="@+id/coinThree"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        tools:src="@drawable/thanks_flip_coin"
        app:layout_constraintStart_toStartOf="@+id/mainBackground"
        app:layout_constraintTop_toTopOf="@+id/cloud" />

    <ImageView
        android:id="@+id/coinFour"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        tools:src="@drawable/thanks_flip_coin"
        app:layout_constraintBottom_toTopOf="@+id/cloud"
        app:layout_constraintEnd_toEndOf="@+id/mainBackground" />

    <ImageView
        android:id="@+id/coinFive"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="40dp"
        tools:src="@drawable/thanks_flat_coin"
        app:layout_constraintBottom_toTopOf="@+id/cloud"
        app:layout_constraintEnd_toEndOf="@+id/mainBackground" />

    <ImageView
        android:id="@+id/coinSix"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        tools:src="@drawable/thanks_flat_coin"
        app:layout_constraintEnd_toEndOf="@+id/mainBackground"
        app:layout_constraintTop_toTopOf="@+id/cloud" />


</androidx.constraintlayout.widget.ConstraintLayout>