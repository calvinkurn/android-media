<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/sp_6"
        android:text="@string/thank_single_auth"
        android:textColor="@color/Neutral_N700_96"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:text="@string/thank_single_auth_cc_message"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading"
        app:typographyType="body_2" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/btn_next_time"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/tv_description"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/bg_green_border_rect"
        android:gravity="center"
        android:text="@string/thank_next_time"
        android:textColor="@color/green_500"
        app:layout_constraintEnd_toStartOf="@+id/btn_activate_now"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:typographyType="heading_5" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/btn_activate_now"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/tv_description"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@drawable/bg_button_green_enabled"
        android:enabled="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="@string/thank_activate_it"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_next_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:typographyType="heading_5" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_dont_show_next_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:enabled="true"
        android:text="@string/thank_dont_ask_again_single_auth"
        android:textColor="@color/font_black_disabled_38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/attach_product_item_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/btn_next_time"
        app:typographyType="body_1"
        app:typographyWeight="reguler" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/attach_product_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/checkBoxStyle"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dont_show_next_time"
        app:layout_constraintStart_toStartOf="@+id/btn_next_time"
        app:layout_constraintTop_toTopOf="@+id/tv_dont_show_next_time" />
</androidx.constraintlayout.widget.ConstraintLayout>
