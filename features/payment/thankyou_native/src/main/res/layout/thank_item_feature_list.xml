<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl4"
    android:layout_marginStart="@dimen/unify_space_12"
    android:layout_marginEnd="@dimen/unify_space_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivFeatureItem"
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4"
            android:scaleType="centerInside"
            app:unify_image_corner_radius = "0"
            app:layout_constraintBottom_toBottomOf="@+id/tvFeatureItemDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFeatureItemTitle"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFeatureItem"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            tools:text="Title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFeatureItemDescription"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFeatureItem"
            app:layout_constraintTop_toBottomOf="@id/tvFeatureItemTitle"
            app:typographyType="body_3"
            tools:text="Title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>