<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/container_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_format_image"
        android:layout_alignParentTop="true">

        <ScrollView
            android:id="@+id/container_help_upload_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/container_help_upload_fast_proof"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    style="@style/TextView.Micro"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text="@string/payment_label_help_proof" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8">

                    <View
                        android:id="@+id/circle_green"
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_6"
                        android:layout_margin="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/circle_green" />

                    <TextView
                        android:id="@+id/label_date"
                        style="@style/TextView.Micro.Bold"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_toRightOf="@+id/circle_green"
                        android:text="@string/payment_label_help_proof_date" />

                    <TextView
                        style="@style/TextView.Micro"
                        android:layout_alignLeft="@+id/label_date"
                        android:layout_below="@id/label_date"
                        android:text="@string/payment_label_help_proof_example_date" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8">

                    <View
                        android:id="@+id/circle_green_2"
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_6"
                        android:layout_margin="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/circle_green" />

                    <TextView
                        android:id="@+id/label_date_2"
                        style="@style/TextView.Micro.Bold"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_toRightOf="@+id/circle_green_2"
                        android:text="@string/payment_label_help_proof_success_status" />

                    <TextView
                        style="@style/TextView.Micro"
                        android:layout_alignLeft="@+id/label_date_2"
                        android:layout_below="@id/label_date_2"
                        android:text="@string/payment_label_help_proof_example_success_status" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8">

                    <View
                        android:id="@+id/circle_green_3"
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_6"
                        android:layout_margin="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/circle_green" />

                    <TextView
                        android:id="@+id/label_date_3"
                        style="@style/TextView.Micro.Bold"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_toRightOf="@+id/circle_green_3"
                        android:text="@string/payment_label_help_proof_receiver" />

                    <TextView
                        style="@style/TextView.Micro"
                        android:layout_alignLeft="@+id/label_date_3"
                        android:layout_below="@id/label_date_3"
                        android:text="@string/payment_label_help_proof_example_receiver" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8">

                    <View
                        android:id="@+id/circle_green_4"
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_6"
                        android:layout_margin="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_5"
                        android:background="@drawable/circle_green" />

                    <TextView
                        android:id="@+id/label_date_4"
                        style="@style/TextView.Micro.Bold"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_toRightOf="@+id/circle_green_4"
                        android:text="@string/payment_label_help_proof_total_transfer" />

                    <TextView
                        style="@style/TextView.Micro"
                        android:layout_alignLeft="@+id/label_date_4"
                        android:layout_below="@id/label_date_4"
                        android:text="@string/payment_label_help_proof_example_total" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/container_help_upload_fast_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp_16"
            android:background="@color/grey_200"
            android:padding="@dimen/dp_8">

            <android.support.v7.widget.AppCompatTextView
                style="@style/TextView.Micro"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:text="@string/payment_label_help_upload_proof" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:padding="@dimen/dp_16"
        android:id="@+id/container_image_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_format_image">

        <TextView
            android:id="@+id/text_confirmation"
            style="@style/TextView.Small"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/payment_label_confirmation_upload_image" />

        <FrameLayout
            android:id="@+id/container_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text_confirmation">

            <ImageView
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/ic_coupon_image"
                android:padding="@dimen/dp_16"
                android:id="@+id/image_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_action_image"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="top|end"
                android:background="@drawable/circle_white"
                app:srcCompat="@drawable/ic_check_green_payment"
                android:padding="@dimen/dp_5"/>
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_format_image"
        style="@style/TextView.Small"
        android:layout_above="@+id/button_save_choose_another_image"
        android:layout_centerHorizontal="true"
        android:text="@string/payment_label_format_image" />

    <Button
        android:id="@+id/button_save_choose_another_image"
        style="@style/Button.Submit.White.Border"
        android:layout_above="@+id/button_save"
        android:text="@string/payment_label_choose_another_image"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_save"
        style="@style/Button.Submit.Green"
        android:layout_alignParentBottom="true"
        android:text="@string/payment_label_choose_image" />
</RelativeLayout>