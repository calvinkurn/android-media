<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_3"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_2">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3sp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image_product_type"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_10"
                    app:srcCompat="@drawable/ic_badge_shop_gm" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_order_date"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_toRightOf="@id/image_product_type"
                    tools:text="8 Nov 2018" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_product_type"
                    style="@style/TextView.Micro.Bold"
                    android:layout_alignLeft="@+id/tv_order_date"
                    android:layout_below="@+id/tv_order_date"
                    tools:text="Belanja" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_overflow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selectable_background_tokopedia"
                    app:srcCompat="@drawable/ic_toolbar_overflow_level_two_black" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_line_separator" />

            <LinearLayout
                android:id="@+id/container_due_date_payment"
                style="@style/CardWarningStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_due_payment_date"
                    style="@style/TextView.Micro"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    tools:text="Bayar sebelum 10 nov 2018, 18:00 WIB" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image_payment"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_10"
                    app:srcCompat="@drawable/ic_badge_shop_gm" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_total"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_toRightOf="@id/image_payment"
                    android:text="@string/payment_label_total"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_value_total"
                    style="@style/TextView.Small.OrangeRed.Bold"
                    android:layout_alignLeft="@+id/tv_total"
                    android:layout_below="@+id/tv_total"
                    android:layout_marginBottom="@dimen/dp_10"
                    tools:text="Rp. 200.000" />

                <LinearLayout
                    android:id="@+id/container_detail_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_value_total"
                    android:layout_below="@id/tv_value_total"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_payment_code"
                        style="@style/TextView.Micro.BlackSecondary"
                        tools:text="Kode Pembayaran" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_value_payment_code"
                        style="@style/TextView.Small"
                        android:layout_marginBottom="@dimen/dp_10"
                        tools:text="2349ojasfdpaosfd09" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_payment_method"
                        style="@style/TextView.Micro.BlackSecondary"
                        android:text="@string/payment_label_method_payment" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_value_payment_method"
                        style="@style/TextView.Small"
                        android:layout_marginBottom="@dimen/dp_10"
                        tools:text="2349ojasfdpaosfd09" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/container_detail_payment_bank_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_payment"
                    android:layout_marginTop="@dimen/dp_10"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/container_sender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/separator_vertical"
                        android:orientation="vertical"
                        android:layout_toStartOf="@+id/separator_vertical"
                        android:layout_alignParentStart="true">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_label_sender_account"
                            style="@style/TextView.Micro.BlackSecondary"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:text="@string/payment_label_acc_sender" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_number_sender_account"
                            style="@style/TextView.Micro.BlackSecondary.Bold"
                            tools:text="****5555" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_name_sender_account"
                            style="@style/TextView.Micro.BlackSecondary.Bold"
                            tools:text="****5555" />
                    </LinearLayout>

                    <View
                        android:id="@+id/separator_vertical"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dp_60"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_line_separator_vertical" />

                    <LinearLayout
                        android:id="@+id/container_receiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/separator_vertical"
                        android:gravity="end"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/separator_vertical"
                        android:layout_alignParentEnd="true">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_label_receiver_account"
                            style="@style/TextView.Micro.BlackSecondary"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:text="@string/payment_label_acc_dest" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_number_receiver_account"
                            style="@style/TextView.Micro.BlackSecondary.Bold"
                            tools:text="****5555" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_name_receiver_account"
                            style="@style/TextView.Micro.BlackSecondary.Bold"
                            tools:text="****5555" />
                    </LinearLayout>

                </RelativeLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_see_detail"
                    style="@style/TextView.Small.Green"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/payment_label_view_invoice" />

            </RelativeLayout>

            <Button
                android:id="@+id/button_how_to_pay"
                style="@style/Button.Submit.Green.Full"
                android:layout_width="match_parent"
                android:text="@string/payment_label_how_to_pay" />

            <Button
                android:id="@+id/button_cancel_payment"
                style="@style/Button.Submit.White.Border"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:text="@string/payment_label_cancel_transaction"
                android:visibility="gone" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>