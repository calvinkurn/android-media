<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/input_layout_click_bca_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/payment_label_hint_click_bca_user_id"
        app:helper="@string/payment_label_helper_change_click_bca"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/input_click_bca_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <Button
        android:id="@+id/button_use"
        style="@style/Button.Submit.Green"
        android:text="@string/payment_label_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>