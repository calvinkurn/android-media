<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.ovop2p">

    <application>
        <activity
            android:name=".view.activity.OvoP2PFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_ovop2ptransfer" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.OVOP2PThankyouActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_ovop2ptransfer_thankyou" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.AllContactsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.OvoP2pWebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
    </application>
</manifest>