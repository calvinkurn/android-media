<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/branding"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_16">

            <TextView
                android:id="@+id/search_no_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entr_name_num"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/search_no"
                app:layout_constraintStart_toStartOf="@+id/search_no" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_no"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:inputType="number"
                app:searchIcon="@null"
                android:paddingLeft="@dimen/dp_neg_16"
                android:clipToPadding="true"
                app:iconifiedByDefault="false"
                app:closeIcon="@drawable/ic_clear_small"
                app:defaultQueryHint="@string/entr_name_num"
                app:layout_constraintEnd_toStartOf="@+id/iv_contact"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_contact"
                app:layout_constraintBottom_toBottomOf="@+id/search_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/search_no"
                app:layout_constraintTop_toTopOf="@+id/search_no" />

            <TextView
                android:id="@+id/src_fnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:textColor="@color/clr_6b767e"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@id/search_no"
                app:layout_constraintTop_toBottomOf="@id/search_no"
                android:text="@string/ovop2p_sumdan" />

            <ImageView
                android:id="@+id/ovo_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                app:srcCompat="@drawable/ovo_logo_form"
                app:layout_constraintBottom_toBottomOf="@+id/saldo"
                app:layout_constraintStart_toStartOf="@+id/src_fnd"
                app:layout_constraintTop_toTopOf="@+id/ovo_cash"/>

            <TextView
                android:id="@+id/ovo_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_7"
                android:paddingTop="@dimen/dp_16"
                android:text="@string/ovop2p_ovocsh"
                android:textColor="@color/clr_2d263b"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toEndOf="@id/ovo_logo"
                app:layout_constraintTop_toBottomOf="@+id/src_fnd" />

            <TextView
                android:id="@+id/saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:lineSpacingExtra="6sp"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_16"
                android:text="@string/ovop2p_sal"
                android:textColor="@color/clr_8c949b"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toEndOf="@+id/ovo_logo"
                app:layout_constraintTop_toBottomOf="@+id/ovo_cash" />

            <View
                android:id="@+id/cntnr_vw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/border_transparent_inside"
                app:layout_constraintBottom_toBottomOf="@+id/saldo"
                app:layout_constraintTop_toTopOf="@+id/ovo_cash" />

            <View
                android:id="@+id/cntnr_vw_amt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@color/clr_f8f8f8"
                app:layout_constraintBottom_toBottomOf="@+id/amt_err_txtv"
                app:layout_constraintTop_toBottomOf="@+id/cntnr_vw" />

            <TextView
                android:id="@+id/nmnl_trnsfr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_16"
                android:text="@string/ovop2p_nomtra"
                android:textColor="@color/clr_6b767e"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@+id/search_no"
                app:layout_constraintTop_toTopOf="@+id/cntnr_vw_amt" />

            <TextView
                android:id="@+id/rp_symbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/ovop2p_symb_rp"
                android:textColor="@color/clr_2d263b"
                android:textSize="@dimen/sp_24"
                app:layout_constraintStart_toStartOf="@+id/search_no"
                app:layout_constraintTop_toBottomOf="@+id/nmnl_trnsfr" />

            <EditText
                android:id="@+id/trnsfr_amt_edtv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="number"
                android:maxLength="18"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_16"
                android:textColor="@color/clr_2d263b"
                android:textColorHint="@color/clr_2d263b"
                android:textSize="@dimen/sp_24"
                android:theme="@style/editTextTheme"
                app:layout_constraintEnd_toEndOf="@+id/cntnr_vw"
                app:layout_constraintStart_toEndOf="@+id/rp_symbl"
                app:layout_constraintTop_toBottomOf="@+id/nmnl_trnsfr" />

            <TextView
                android:id="@+id/amt_err_txtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/ovop2p_err"
                android:textColor="@color/red_600"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/search_no"
                app:layout_constraintTop_toBottomOf="@+id/trnsfr_amt_edtv" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                app:counterEnabled="true"
                app:counterMaxLength="25"
                app:layout_constraintStart_toStartOf="@+id/search_no"
                app:layout_constraintTop_toBottomOf="@+id/cntnr_vw_amt">

                <EditText
                    android:id="@+id/msg_edtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ovop2p_psn_opt"
                    android:maxLength="25"
                    android:textColor="@color/clr_6b767e"
                    android:textSize="@dimen/sp_16"
                    android:theme="@style/msgEditTextTheme" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_56"
                android:background="@drawable/btn_bg_rounded_corners"
                android:enabled="false"
                android:text="@string/lnjktn"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/msg"
                app:layout_constraintVertical_bias="0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include
        android:id="@+id/branding"
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
