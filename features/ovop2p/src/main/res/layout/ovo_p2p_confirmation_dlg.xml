<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/unify_space_24">

    <TextView
        android:id="@+id/txtv_trnsfr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unify_space_24"
        android:layout_marginTop="@dimen/unify_space_24"
        android:text="@string/ovop2p_conf_trnsfr"
        android:textColor="@color/dms_ovop2p_clr_4c2a86"
        android:textSize="@dimen/ovop2p_sp16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcvr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ovop2p_dp30"
        android:text="@string/ovop2p_pnrm"
        android:textColor="@color/dms_ovop2p_clr_6b767e"
        android:textSize="@dimen/ovop2p_sp12"
        app:layout_constraintStart_toStartOf="@+id/txtv_trnsfr"
        app:layout_constraintTop_toBottomOf="@+id/txtv_trnsfr" />

    <ImageView
        android:id="@+id/rcvr_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_4"
        android:src="@drawable/usr_img_filler"
        app:layout_constraintStart_toStartOf="@+id/txtv_trnsfr"
        app:layout_constraintTop_toBottomOf="@+id/rcvr" />

    <TextView
        android:id="@+id/rcvr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unify_space_2"
        tools:text="Juwita Restianisa"
        android:textColor="@color/dms_ovop2p_clr_2d263b"
        android:textSize="@dimen/ovop2p_sp16"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/rcvr_img"
        app:layout_constraintTop_toTopOf="@+id/rcvr_img" />

    <TextView
        android:id="@+id/rcvr_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unify_space_2"
        tools:text="082332443770"
        android:textColor="@color/dms_ovop2p_clr_6b767e"
        android:textSize="@dimen/ovop2p_sp12"
        app:layout_constraintStart_toEndOf="@+id/rcvr_img"
        app:layout_constraintTop_toBottomOf="@+id/rcvr_name" />

    <TextView
        android:id="@+id/trnsfr_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ovop2p_dp28"
        android:lineSpacingExtra="@dimen/ovop2p_sp12"
        android:text="@string/ovop2p_sumdan"
        android:textColor="@color/dms_ovop2p_clr_6b767e"
        android:textSize="@dimen/ovop2p_sp12"
        app:layout_constraintStart_toStartOf="@+id/rcvr_img"
        app:layout_constraintTop_toBottomOf="@+id/rcvr_no" />

    <TextView
        android:id="@+id/trnsfr_mode_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_4"
        android:text="@string/ovop2p_ovocsh"
        android:textColor="@color/dms_ovop2p_clr_2d263b"
        android:textSize="@dimen/ovop2p_sp16"
        app:layout_constraintStart_toStartOf="@+id/trnsfr_mode"
        app:layout_constraintTop_toBottomOf="@+id/trnsfr_mode" />

    <TextView
        android:id="@+id/amt_ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ovop2p_dp28"
        android:lineSpacingExtra="@dimen/ovop2p_sp12"
        android:text="@string/ovop2p_nmnl"
        android:textColor="@color/dms_ovop2p_clr_6b767e"
        android:textSize="@dimen/ovop2p_sp12"
        app:layout_constraintStart_toStartOf="@+id/trnsfr_mode_val"
        app:layout_constraintTop_toBottomOf="@+id/trnsfr_mode_val" />

    <TextView
        android:id="@+id/trnsfr_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_4"
        tools:text="Rp13.000"
        android:textColor="@color/dms_ovop2p_clr_2d263b"
        android:textSize="@dimen/ovop2p_sp18"
        app:layout_constraintStart_toStartOf="@+id/amt_ttl"
        app:layout_constraintTop_toBottomOf="@+id/amt_ttl" />

    <TextView
        android:id="@+id/msg_ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ovop2p_dp28"
        android:lineSpacingExtra="@dimen/ovop2p_sp12"
        android:text="@string/ovop2p_psn"
        android:textColor="@color/dms_ovop2p_clr_6b767e"
        android:textSize="@dimen/ovop2p_sp12"
        app:layout_constraintStart_toStartOf="@+id/trnsfr_amt"
        app:layout_constraintTop_toBottomOf="@+id/trnsfr_amt" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_4"
        android:lineSpacingExtra="@dimen/ovop2p_sp8"
        android:text="@string/ovop2p_terkas"
        android:textColor="@color/dms_ovop2p_clr_2d263b"
        android:textSize="@dimen/ovop2p_sp16"
        app:layout_constraintStart_toStartOf="@+id/msg_ttl"
        app:layout_constraintTop_toBottomOf="@+id/msg_ttl" />

    <Button
        android:id="@+id/proceed_dlg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/ovop2p_dp30"
        android:layout_marginTop="@dimen/ovop2p_dp50"
        android:layout_marginRight="@dimen/ovop2p_dp30"
        android:layout_marginBottom="@dimen/ovop2p_dp50"
        android:background="@drawable/btn_bg_rounded_corners"
        android:gravity="center"
        android:text="@string/trnsfr"
        android:textColor="@color/Unify_Static_White"
        android:textSize="@dimen/ovop2p_sp14"
        app:layout_constraintTop_toBottomOf="@+id/msg" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ovop2p_dp30"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/ovop2p_dp30"
        android:layout_marginBottom="@dimen/ovop2p_dp20"
        android:gravity="center_horizontal"
        android:padding="@dimen/ovop2p_dp5"
        android:text="@string/ovop2p_btlkn"
        android:textColor="@color/dms_ovop2p_clr_06b3ba"
        android:textSize="@dimen/ovop2p_sp14"
        app:layout_constraintTop_toBottomOf="@+id/proceed_dlg" />

</androidx.constraintlayout.widget.ConstraintLayout>