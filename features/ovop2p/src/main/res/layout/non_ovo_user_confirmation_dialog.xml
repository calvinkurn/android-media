<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/unify_space_24">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:paddingBottom="@dimen/unify_space_24"
        android:text="@string/ovop2p_perhtn"
        android:textColor="@color/ovop2p_clr_4c2a86"
        android:textSize="@dimen/ovop2p_sp16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ovop2p_dp30"
        android:layout_marginRight="@dimen/ovop2p_dp30"
        android:lineSpacingExtra="@dimen/ovop2p_sp10"
        android:textColor="@color/ovop2p_clr_2d263b"
        android:textSize="@dimen/ovop2p_sp14"
        android:text="@string/ovop2p_nonovo_conf_msg"/>
    <Button
        android:id="@+id/proceed_dlg_non_ovo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/ovop2p_dp30"
        android:layout_marginTop="@dimen/unify_space_40"
        android:layout_marginRight="@dimen/ovop2p_dp30"
        android:layout_marginBottom="@dimen/ovop2p_dp10"
        android:background="@drawable/btn_bg_rounded_corners"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/trnsfr"
        android:textColor="@color/Unify_Static_White"
        android:textSize="@dimen/ovop2p_sp14" />

    <TextView
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ovop2p_dp30"
        android:layout_marginTop="@dimen/ovop2p_dp20"
        android:layout_marginRight="@dimen/ovop2p_dp30"
        android:layout_marginBottom="@dimen/ovop2p_dp20"
        android:gravity="center_horizontal"
        android:padding="@dimen/ovop2p_dp5"
        android:textAllCaps="true"
        android:text="@string/tutup"
        android:textColor="@color/ovop2p_clr_06b3ba"
        android:textSize="@dimen/ovop2p_sp14" />
</LinearLayout>