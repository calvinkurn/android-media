<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/unify_space_16"
    android:layout_marginRight="@dimen/unify_space_16">

    <ImageView
        android:id="@+id/img_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_32"
        app:srcCompat="@drawable/ic_rectangle_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wrng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ovop2p_dp6"
        android:gravity="center_horizontal"
        android:text="@string/ovop2p_tidber"
        android:textColor="@color/ovop2p_dms_clr_cc003d"
        android:textSize="@dimen/ovop2p_sp20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_error" />

    <TextView
        android:id="@+id/txn_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/ovop2p_sp4"
        android:text="@string/ovop2p_jgnkhw"
        android:textColor="@color/ovop2p_dms_clr_6b767e"
        android:textSize="@dimen/ovop2p_sp16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrng" />

    <TextView
        android:id="@+id/try_agn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ovop2p_dp20"
        android:layout_marginBottom="@dimen/ovop2p_dp20"
        android:background="@drawable/btn_bg_rounded_corners"
        android:gravity="center_horizontal"
        android:text="@string/ovop2p_coblag"
        android:textColor="@color/Unify_Static_White"
        android:textSize="@dimen/ovop2p_sp14"
        app:layout_constraintBottom_toTopOf="@+id/back_to_app" />

    <TextView
        android:id="@+id/back_to_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/ovop2p_dp30"
        android:layout_marginRight="@dimen/ovop2p_dp30"
        android:layout_marginBottom="@dimen/unify_space_24"
        android:gravity="center"
        android:text="@string/ovop2p_kemke"
        android:textColor="@color/ovop2p_dms_clr_06b3ba"
        android:textSize="@dimen/ovop2p_sp14"
        app:layout_constraintBottom_toTopOf="@+id/branding_lauout" />

    <include
        android:id="@+id/branding_lauout"
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>