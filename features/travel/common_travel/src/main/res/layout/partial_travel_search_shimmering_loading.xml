<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/travelShimmeringContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/travelSearchLoaderTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginEnd="@dimen/spacing_lvl5"
            android:layout_marginRight="@dimen/spacing_lvl5"
            app:corners="20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/travelSearchLoaderDotDepartureTime"
            android:layout_width="@dimen/layout_lvl1"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="20"
            app:layout_constraintBottom_toBottomOf="@+id/travelSearchLoaderDepartureTime"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/travelSearchLoaderDepartureTime"
            app:use_gradient="true" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:background="@color/travel_search_shimmering_departure_line"
            app:layout_constraintBottom_toTopOf="@+id/travelSearchLoaderDotArrivalTime"
            app:layout_constraintLeft_toLeftOf="@+id/travelSearchLoaderDotDepartureTime"
            app:layout_constraintRight_toRightOf="@+id/travelSearchLoaderDotDepartureTime"
            app:layout_constraintTop_toBottomOf="@+id/travelSearchLoaderDotDepartureTime" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/travelSearchLoaderDotArrivalTime"
            android:layout_width="@dimen/layout_lvl1"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="20"
            app:layout_constraintBottom_toBottomOf="@+id/travelSearchLoaderArrivalTime"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/travelSearchLoaderArrivalTime"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/travelSearchLoaderDepartureTime"
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:corners="20"
            app:layout_constraintLeft_toRightOf="@+id/travelSearchLoaderDotDepartureTime"
            app:layout_constraintTop_toBottomOf="@+id/travelSearchLoaderTitle"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/travelSearchLoaderDuration"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:corners="20"
            app:layout_constraintLeft_toLeftOf="@+id/travelSearchLoaderDepartureTime"
            app:layout_constraintTop_toBottomOf="@+id/travelSearchLoaderDepartureTime"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/travelSearchLoaderArrivalTime"
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:corners="20"
            app:layout_constraintLeft_toLeftOf="@+id/travelSearchLoaderDepartureTime"
            app:layout_constraintTop_toBottomOf="@+id/travelSearchLoaderDuration"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/travelSearchLoaderStrikePrice"
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            app:corners="20"
            app:layout_constraintBottom_toTopOf="@+id/travelSearchLoaderPrice"
            app:layout_constraintRight_toRightOf="parent"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/travelSearchLoaderPrice"
            android:layout_width="@dimen/layout_lvl9"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="20"
            app:layout_constraintBottom_toBottomOf="@+id/travelSearchLoaderArrivalTime"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/travelSearchLoaderDepartureTime"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/travelSearchLoaderDetail"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:corners="20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/travelSearchLoaderPrice"
            app:use_gradient="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/travel_search_shimmering_departure_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travelShimmeringContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>