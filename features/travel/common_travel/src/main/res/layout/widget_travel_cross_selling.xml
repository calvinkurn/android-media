<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_lvl5"
    android:paddingBottom="@dimen/spacing_lvl5"
    android:background="@color/Unify_N0">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Lengkapi Perjalananmu" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cross_selling_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="@dimen/cross_selling_rv_margin_start"
        android:paddingLeft="@dimen/cross_selling_rv_margin_start"
        android:paddingEnd="@dimen/cross_selling_rv_margin_end"
        android:paddingRight="@dimen/cross_selling_rv_margin_end" />
</LinearLayout>