<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_lvl5"
        android:paddingBottom="@dimen/spacing_lvl5">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lengkapi Perjalananmu"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:textColor="@color/Unify_N700_96"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl5"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cross_selling_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/cross_selling_rv_margin_start"
            android:paddingStart="@dimen/cross_selling_rv_margin_start"
            android:paddingEnd="@dimen/cross_selling_rv_margin_end"
            android:paddingRight="@dimen/cross_selling_rv_margin_end"
            android:clipToPadding="false"
            />
    </LinearLayout>



</androidx.cardview.widget.CardView>