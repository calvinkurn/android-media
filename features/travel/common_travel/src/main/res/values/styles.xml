<resources>

    <style name="Theme.White.MenuSmall" parent="Theme.White">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TravelButtonRound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/common_travel_dp_10</item>
        <item name="android:paddingRight">@dimen/common_travel_dp_10</item>
        <item name="android:paddingTop">@dimen/common_travel_dp_10</item>
        <item name="android:paddingBottom">@dimen/common_travel_dp_10</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/text_color_travel_trip_button</item>
        <item name="android:background">@drawable/bg_travel_round_button</item>
    </style>

    <style name="TravelWidgetSelectPassengerView">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/common_travel_dp_10</item>
        <item name="android:paddingRight">@dimen/common_travel_dp_10</item>
        <item name="android:paddingTop">@dimen/common_travel_dp_20</item>
        <item name="android:paddingBottom">@dimen/common_travel_dp_10</item>
    </style>

    <style name="TravelWidgetSelectPassengerViewIcon">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
    </style>

    <style name="TravelInputLabel">
        <item name="android:textColor">@color/Neutral_N700_68</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textColor">@color/Unify_R500</item>
    </style>
</resources>
