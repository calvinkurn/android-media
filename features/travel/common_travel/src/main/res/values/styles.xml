<resources>

    <style name="Theme.White.MenuSmall" parent="Theme.White">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TravelButtonRound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/text_color_travel_trip_button</item>
        <item name="android:background">@drawable/bg_travel_round_button</item>
    </style>

    <style name="TravelWidgetSelectPassengerView">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_20</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
    </style>

    <style name="TravelWidgetSelectPassengerViewIcon">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
    </style>

    <style name="TravelInputLabel">
        <item name="android:textColor">@color/font_black_secondary_54</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textColor">@color/red_pink</item>
    </style>

    <style name="helperTextAppearance">
        <item name="android:textColor">@color/Unify_N700_44</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="successTextAppearance">
        <item name="android:textColor">@color/Unify_G500</item>
    </style>

    <style name="TravelHintTextInputLayout">
        <item name="defaultTextColorLabel">@color/Unify_N700_68</item>
        <item name="focusedTextColorLabel">@color/Unify_N700_68</item>
        <item name="disabledTextColorLabel">@color/Unify_N700_68</item>
        <item name="android:theme">@style/TravelHintTextInputLayoutColorLine</item>
    </style>

    <style name="TravelHintTextInputLayoutColorLine" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">@color/grey_300</item>
        <item name="colorControlNormal">@color/Unify_N700_20</item>
        <item name="colorControlActivated">@color/Unify_G500</item>
        <item name="colorControlHighlight">@color/Green_G500</item>
    </style>

</resources>
