<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextInputView">
        <attr name="tiv_remove_background" format="boolean" />
        <attr name="tiv_title_text" format="string" />
        <attr name="tiv_hint_text" format="string" />
        <attr name="tiv_icon" format="reference" />
        <attr name="allow_input_manually" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NumberPickerWithCounterView">
        <attr name="npc_min_value" format="integer" />
        <attr name="npc_max_value" format="integer" />
        <attr name="npc_value" format="integer" />
        <attr name="npc_enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SelectPassengerView">
        <attr name="spv_title" format="string" />
        <attr name="spv_subtitle" format="string" />
        <attr name="spv_value" format="integer" />
        <attr name="spv_icon" format="reference" />
        <attr name="spv_min_value" format="integer" />
        <attr name="spv_max_value" format="integer" />
    </declare-styleable>

    <declare-styleable name="CardWithActionView">
        <attr name="cmv_title" format="string" />
        <attr name="cmv_content" format="string" />
        <attr name="cmv_content_info" format="string" />
        <attr name="cmw_subcontent" format="string" />
        <attr name="cmw_subcontent_info" format="string" />
        <attr name="cmw_action" format="string" />
    </declare-styleable>

    <declare-styleable name="CountdownTimeView">
        <attr name="ctv_minute_title" format="string" />
        <attr name="ctv_second_title" format="string" />
        <attr name="ctv_hour_title" format="string" />
    </declare-styleable>

    <declare-styleable name="DepartureLabelView">
        <attr name="dlv_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="TicketView">
        <attr format="reference" name="tv_anchor1"/>
        <attr format="reference" name="tv_anchor2"/>

        <attr format="color" name="tv_dashColor"/>
        <attr format="dimension" name="tv_dashSize"/>
        <attr format="dimension" name="tv_circleSpace"/>
        <attr format="dimension" name="tv_circleRadius"/>
    </declare-styleable>
</resources>