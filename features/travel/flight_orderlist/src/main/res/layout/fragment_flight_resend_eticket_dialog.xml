<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_20"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flight_resend_eticket_dialog_title"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/flight_resend_eticket_dialog_description"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tfResendEticketEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:text_field_input_type="textEmailAddress"
        app:text_field_label=""
        app:text_field_label_static="true"
        app:text_field_placeholder="@string/flight_resend_eticket_dialog_email_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:gravity="end"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgResendETicketCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:text="@string/flight_resend_eticket_dialog_abort"
            android:textColor="@color/Neutral_N700_68"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgResendETicketSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:text="@string/flight_resend_eticket_dialog_send"
            android:textColor="@color/Unify_G500"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

    </LinearLayout>
</LinearLayout>
