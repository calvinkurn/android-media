<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/flight_orderlist_20dp"
    android:orientation="vertical"
    android:padding="@dimen/flight_orderlist_20dp">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flight_resend_eticket_dialog_title"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/flight_resend_eticket_dialog_description"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_2" />

    <com.tokopedia.common.travel.widget.TkpdHintTextInputLayout
        android:id="@+id/container_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:errorEnabled="true"
        app:hintEnabled="false">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_resend_eticket_email"
            style="@style/HintTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/flight_resend_eticket_dialog_email_hint"
            android:imeActionLabel="@string/label_done"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextView.Small"
            android:textColor="@color/Unify_N700_44" />

    </com.tokopedia.common.travel.widget.TkpdHintTextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:gravity="end|right"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_resend_eticket_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/flight_orderlist_10dp"
            android:layout_marginTop="@dimen/flight_orderlist_10dp"
            android:layout_marginRight="@dimen/flight_orderlist_20dp"
            android:layout_marginBottom="@dimen/flight_orderlist_10dp"
            android:text="@string/flight_resend_eticket_dialog_abort"
            android:textColor="@color/Unify_N700_44"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_resend_eticket_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/flight_orderlist_20dp"
            android:layout_marginTop="@dimen/flight_orderlist_10dp"
            android:layout_marginRight="@dimen/flight_orderlist_10dp"
            android:layout_marginBottom="@dimen/flight_orderlist_10dp"
            android:text="@string/flight_resend_eticket_dialog_send"
            android:textColor="@color/Unify_G500"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

    </LinearLayout>

</LinearLayout>
