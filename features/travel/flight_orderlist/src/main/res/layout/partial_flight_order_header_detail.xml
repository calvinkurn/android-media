<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700_68"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_G100"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:gravity="center"
        tools:text="Transaksi Berhasil" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/flight_orderlist_10dp"
        android:padding="@dimen/flight_orderlist_10dp">

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_96"
            android:id="@+id/tv_order_date"
            tools:text="9 Jan 2017" />

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_3"
            android:textColor="@color/Unify_N700_96"
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_date"
            tools:text="Order ID: 323088926194" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selectable_background_tokopedia"
            app:srcCompat="@drawable/ic_toolbar_overflow_level_two_black" />
    </RelativeLayout>
</LinearLayout>
