<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/flight_orderlist_10dp"
    android:paddingTop="@dimen/spacing_lvl1"
    android:paddingRight="@dimen/flight_orderlist_10dp"
    android:paddingBottom="@dimen/spacing_lvl2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3sp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/partial_flight_order_header_detail" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:layout_marginBottom="@dimen/spacing_lvl2"
                android:background="@drawable/bg_line_separator" />

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/cancellation_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_lvl3"
                android:autoLink="web"
                android:visibility="gone"
                app:closeButtonVisibility="gone"
                app:tickerShapeType="loose"
                app:tickerType="warning"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/flight_orderlist_10dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/flight_orderlist_40dp"
                    android:layout_height="@dimen/flight_orderlist_40dp"
                    app:srcCompat="@drawable/ic_flight_round" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/flight_orderlist_10dp"
                    android:paddingLeft="@dimen/flight_orderlist_10dp">

                    <include layout="@layout/partial_flight_order_journey_view" />

                    <include layout="@layout/partial_flight_order_departure_schedule" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:background="@drawable/bg_line_separator" />

            <com.tokopedia.unifyprinciples.Typography
                app:typographyType="heading_4"
                android:id="@+id/tv_main_button"
                android:textColor="@color/Unify_N700_68"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_background_tokopedia"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/flight_orderlist_10dp"
                android:paddingTop="@dimen/flight_orderlist_20dp"
                android:paddingRight="@dimen/flight_orderlist_10dp"
                android:paddingBottom="@dimen/flight_orderlist_20dp"
                android:text="@string/flight_order_list_button_send_eticket" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>