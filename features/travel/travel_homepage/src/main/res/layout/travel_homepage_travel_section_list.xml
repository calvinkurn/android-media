<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/section_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/section_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toStartOf="@+id/section_see_all"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_2"
            tools:text="Travel Activity" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/section_see_all"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:text="@string/travel_homepage_section_see_all"
            android:textColor="@color/Unify_G500"
            app:layout_constraintBottom_toBottomOf="@+id/section_title"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            app:layout_constraintEnd_toEndOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/travel_homepage_section_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:layout_constraintTop_toBottomOf="@+id/section_title"
            tools:text="Akhir pekan? Waktunya makan-makan!" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:clipToPadding="false"
            android:paddingStart="@dimen/spacing_lvl4"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingEnd="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4"
            app:layout_constraintTop_toBottomOf="@+id/travel_homepage_section_subtitle"
            android:nestedScrollingEnabled="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include android:id="@+id/shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_travel_destination_section_shimmering"
        android:visibility="gone"
        />

</FrameLayout>

