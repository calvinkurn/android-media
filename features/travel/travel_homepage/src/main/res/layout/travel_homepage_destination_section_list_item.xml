<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/destination_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/travel_homepage_dp_2"
    android:layout_marginBottom="@dimen/layout_lvl1"
    app:cardCornerRadius="@dimen/layout_lvl1"
    app:cardElevation="@dimen/travel_homepage_dp_2"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/travel_homepage_dp_145"
            android:maxHeight="@dimen/travel_homepage_dp_200"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/Unify_N200"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            app:layout_constraintTop_toTopOf="@+id/image"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            android:background="@drawable/travel_destination_section_overlay"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Unify_N0"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:typographyType="heading_3"
            tools:text="Hotel di Jakarta Selatan hehe" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginTop="@dimen/travel_homepage_dp_4"
            android:layout_marginBottom="@dimen/layout_lvl2"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Unify_N0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:typographyType="body_3"
            tools:text="Indonesia Tanah Air Beta Pu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


