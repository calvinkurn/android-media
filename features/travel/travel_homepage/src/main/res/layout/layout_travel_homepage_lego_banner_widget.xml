<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/travel_homepage_lego_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_lvl2">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/travel_homepage_lego_banner_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_2"
            tools:text="Travel Activity" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/travel_homepage_lego_banner_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/travel_homepage_dp_4"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            tools:text="Akhir pekan? Waktunya makan-makan!" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/travel_homepage_lego_banner_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>

    <include android:id="@+id/lego_banner_shimmering"
        layout="@layout/travel_homepage_lego_banner_shimmering"
        android:visibility="gone"/>

</FrameLayout>


