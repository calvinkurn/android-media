<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/category_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/travel_homepage_dp_12"
        android:layout_gravity="center"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_lvl1"
        android:paddingLeft="@dimen/spacing_lvl1"
        android:paddingEnd="@dimen/spacing_lvl1"
        android:paddingRight="@dimen/spacing_lvl1"
        app:typographyType="small"
        tools:text="Travel and Entertainment"
        android:textColor="@color/Neutral_N700_96"/>
</LinearLayout>
