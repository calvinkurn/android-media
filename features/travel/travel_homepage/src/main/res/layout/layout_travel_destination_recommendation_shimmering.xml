<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_lvl2"
    android:background="@drawable/bg_travel_recommendation">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        app:corners="8"
        app:width_weight="0.8"
        />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        app:corners="8"
        app:width_weight="0.7"
        android:layout_marginTop="@dimen/travel_homepage_dp_12"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/spacing_lvl6"
            android:layout_height="@dimen/spacing_lvl6"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/img_2"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/img_2"
            android:layout_marginRight="@dimen/travel_homepage_dp_12"
            android:layout_marginEnd="@dimen/travel_homepage_dp_12"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/img_2"
            android:layout_marginRight="@dimen/travel_homepage_dp_12"
            android:layout_marginEnd="@dimen/travel_homepage_dp_12"
            app:corners="8"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/img_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/spacing_lvl6"
            android:layout_height="@dimen/spacing_lvl6"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_3"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_3"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/img_4"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/img_4"
            android:layout_marginRight="@dimen/travel_homepage_dp_12"
            android:layout_marginEnd="@dimen/travel_homepage_dp_12"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/img_4"
            android:layout_marginRight="@dimen/travel_homepage_dp_12"
            android:layout_marginEnd="@dimen/travel_homepage_dp_12"
            app:corners="8"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/img_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/spacing_lvl6"
            android:layout_height="@dimen/spacing_lvl6"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl1"
            app:layout_constraintLeft_toRightOf="@+id/img_5"
            app:layout_constraintRight_toLeftOf="@+id/img_6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginRight="@dimen/travel_homepage_dp_12"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            android:layout_marginEnd="@dimen/travel_homepage_dp_12"
            app:width_weight="0.6"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/img_6"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>