<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/layout_lvl2">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/travel_homepage_dp_10"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:width_weight="0.9" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/travel_homepage_dp_6"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:width_weight="0.6"
        android:layout_marginTop="@dimen/travel_homepage_dp_12"/>

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/travel_homepage_dp_200"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:corners="@integer/travel_subhomepage_shimmering_corner"/>

</LinearLayout>