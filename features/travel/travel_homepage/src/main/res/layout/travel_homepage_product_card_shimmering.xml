<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:padding="@dimen/layout_lvl2">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmeringTv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:width_weight="0.9" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering2Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmeringTv"
        android:layout_marginTop="@dimen/travel_homepage_dp_12"
        app:width_weight="0.8" />

    <LinearLayout
        android:id="@+id/image_shimmering_2"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering2Tv"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:orientation="vertical">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_145"
            app:corners="@integer/travel_subhomepage_shimmering_corner" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/layout_lvl2"
            app:width_weight="0.9"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:width_weight="0.9"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/layout_lvl3"
            app:width_weight="0.4"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            android:layout_marginBottom="@dimen/spacing_lvl7"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_shimmering_3"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/image_shimmering_2"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:orientation="vertical">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_145"
            app:corners="@integer/travel_subhomepage_shimmering_corner" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/layout_lvl2"
            app:width_weight="0.9"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:width_weight="0.9"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/layout_lvl3"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            app:width_weight="0.4" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            android:layout_marginBottom="@dimen/travel_homepage_dp_22"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            app:width_weight="0.6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_shimmering_4"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:orientation="vertical"

        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering_2">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_145"
            app:corners="@integer/travel_subhomepage_shimmering_corner" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/layout_lvl2"
            app:width_weight="0.9"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:width_weight="0.9"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/layout_lvl3"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            app:width_weight="0.4" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            android:layout_marginBottom="@dimen/travel_homepage_dp_22"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            app:width_weight="0.6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/image_shimmering_5"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering_3"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:orientation="vertical">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_145"
            app:corners="@integer/travel_subhomepage_shimmering_corner" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/layout_lvl2"
            app:width_weight="0.9"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:width_weight="0.9"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_6"
            android:layout_marginTop="@dimen/layout_lvl3"
            app:width_weight="0.4"
            app:corners="@integer/travel_subhomepage_shimmering_corner"
            android:layout_marginBottom="@dimen/spacing_lvl7"
            />
    </LinearLayout>

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/travel_homepage_dp_40"
        app:layout_constraintTop_toBottomOf="@+id/image_shimmering_5"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>