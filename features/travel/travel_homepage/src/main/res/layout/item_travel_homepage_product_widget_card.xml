<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/travel_homepage_dp_4"
    android:layout_marginRight="@dimen/travel_homepage_dp_4"
    android:layout_marginTop="@dimen/layout_lvl1"
    android:layout_marginBottom="@dimen/layout_lvl1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/homepage_product_card_picture_height"
        app:cardCornerRadius="@dimen/layout_lvl1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/travel_homepage_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:background="@color/Green_G500" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/travel_homepage_product_discount_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_lvl1"
                android:background="@color/product_card_orange_detail"
                android:padding="@dimen/travel_homepage_dp_4"
                android:textColor="@color/Neutral_N0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:typographyType="small"
                app:typographyWeight="bold"
                tools:text="Diskon 30%"
                android:visibility="gone"
                tools:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/travel_homepage_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginBottom="@dimen/travel_homepage_dp_2"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2"
        tools:text="Voucher Kintan Buffet Rp100.000 Voucher Kintan Buffet Rp100.000 Voucher Kintan Buffet Rp100.000 Voucher Kintan Buffet Rp100.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/travel_homepage_product_strikethrough_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/travel_homepage_dp_2"
        android:textColor="@color/Neutral_N700_68"
        app:typographyType="body_3"
        tools:text="Rp 150.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/travel_homepage_product_final_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/travel_homepage_dp_2"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp 100.000" />


</LinearLayout>