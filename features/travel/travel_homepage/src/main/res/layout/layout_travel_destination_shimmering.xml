<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/shimmering_back_icon"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_margin="@dimen/unify_space_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_system_action_back_white_24"/>
    
    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white_travel_destination_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="@dimen/layout_lvl3"
        android:paddingLeft="@dimen/layout_lvl2"
        android:paddingRight="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/layout_lvl2">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="8"
            app:width_weight="0.7"
            />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_gravity="center"
            app:corners="16"/>

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="92dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_gravity="center"
            app:corners="8" />
    </LinearLayout>
    

</androidx.constraintlayout.widget.ConstraintLayout>