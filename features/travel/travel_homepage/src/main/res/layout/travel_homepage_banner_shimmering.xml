<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0">

    <FrameLayout
        android:id="@+id/container_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_banner_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_dynamic_background_height"
            android:background="@color/Unify_G400" />

        <ImageView
            android:id="@+id/overlay_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/banner_dynamic_background_height"
            android:alpha="0.32"
            android:background="@color/Unify_N700"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/overlay_round"
            android:layout_width="match_parent"
            android:layout_height="@dimen/travel_homepage_dp_30"
            android:layout_gravity="bottom"
            android:background="@drawable/travel_background_banner_image_mask"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </FrameLayout>

    <View
        android:id="@+id/white_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/travel_homepage_dp_20"
        android:layout_gravity="bottom"
        android:background="@color/Unify_N0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_background" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="?actionBarSize"
        tools:layout_constraintGuide_begin="30dp" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/travel_homepage_dp_121"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:corners="@integer/travel_subhomepage_shimmering_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

</androidx.constraintlayout.widget.ConstraintLayout>