<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/layout_lvl3"
    android:background="@color/Unify_N0">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_1"
        android:layout_width="58dp"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_margin="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:corners="8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_margin="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:corners="8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shimmer_1"
        app:layout_constraintTop_toTopOf="parent"
        app:width_weight="0.5" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmer_img"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="@dimen/layout_lvl2"
        app:corners="8"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_1" />

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_lvl2"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_img">


        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/image_1"
            android:layout_width="181dp"
            android:layout_height="@dimen/travel_homepage_dp_110"
            app:corners="8" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="65dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:corners="8" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:corners="8" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:corners="8" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_lvl2"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/layout_1"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_img">


        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="181dp"
            android:layout_height="@dimen/travel_homepage_dp_110"
            app:corners="8" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="65dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:corners="8" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:corners="8" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            app:corners="8" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>