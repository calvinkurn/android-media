<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/travel_homepage_product_widget_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl1"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/travel_homepage_product_widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_2"
            tools:text="Travel Activity" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/travel_homepage_product_widget_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/travel_homepage_dp_4"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            tools:text="Akhir pekan? Waktunya makan-makan!" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/travel_homepage_product_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl1"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:paddingStart="@dimen/travel_homepage_dp_4"
            android:paddingLeft="@dimen/travel_homepage_dp_4"
            android:paddingEnd="@dimen/travel_homepage_dp_4"
            android:paddingRight="@dimen/travel_homepage_dp_4" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/travel_homepage_product_widget_see_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:text="Tampilkan Semua"
            android:visibility="gone"
            app:unifyButtonType="alternate"
            app:unifyButtonVariant="ghost"
            tools:visibility="visible"
            app:unifyButtonSize="medium"/>
    </LinearLayout>

    <include
        android:id="@+id/travel_product_widget_shimmering"
        layout="@layout/travel_homepage_product_card_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</FrameLayout>


