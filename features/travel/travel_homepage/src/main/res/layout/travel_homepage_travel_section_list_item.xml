<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl1"
    android:layout_marginLeft="@dimen/spacing_lvl1"
    android:layout_marginTop="@dimen/spacing_lvl1"
    android:layout_marginEnd="@dimen/travel_homepage_dp_3"
    android:layout_marginRight="@dimen/travel_homepage_dp_3"
    android:layout_marginBottom="@dimen/spacing_lvl1"
    app:cardCornerRadius="@dimen/travel_homepage_dp_3"
    app:cardElevation="@dimen/spacing_lvl1"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/travel_homepage_section_width_260"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingLeft="0dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/Neutral_N200" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginTop="@dimen/travel_homepage_dp_3"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Hotel di Jakarta Selatan hehe" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginTop="@dimen/travel_homepage_dp_2"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:typographyType="body_3"
            tools:text="Indonesia Tanah Air Beta Pu" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/prefix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/travel_homepage_dp_12"
            android:layout_marginLeft="@dimen/travel_homepage_dp_12"
            android:layout_marginTop="@dimen/travel_homepage_dp_12"
            android:layout_marginBottom="@dimen/travel_homepage_dp_3"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            app:typographyType="body_3"
            tools:text="2000+ hotel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


