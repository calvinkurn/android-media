<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardWarningStyle">
        <item name="android:padding">@dimen/spacing_lvl3</item>
        <item name="android:background">@drawable/flight_bg_card_warning</item>
        <item name="android:textSize">@dimen/fontSize_lvl2</item>
    </style>

    <style name="FlightChips">
        <item name="android:paddingTop">@dimen/spacing_lvl1</item>
        <item name="android:paddingBottom">@dimen/spacing_lvl1</item>
        <item name="android:paddingLeft">@dimen/spacing_lvl2</item>
        <item name="android:paddingRight">@dimen/spacing_lvl2</item>
    </style>

    <style name="FlightChips.Info">
        <item name="android:background">@drawable/flight_bg_flight_chip_info</item>
        <item name="android:textColor">@color/flight_chips_info_text</item>
    </style>

    <style name="CardSuccessStatusStyle">
        <item name="android:background">@drawable/flight_bg_card_success</item>
        <item name="android:textSize">@dimen/fontSize_lvl1</item>
        <item name="android:textColor">@color/Unify_G500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardFailedStatusStyle">
        <item name="android:background">@drawable/flight_bg_card_failed</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textColor">@color/Unify_R500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardProcessStatusStyle">
        <item name="android:background">@drawable/flight_bg_card_process</item>
        <item name="android:textSize">@dimen/fontSize_lvl1</item>
        <item name="android:textColor">#CA8600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FlightProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/Unify_G500</item>
    </style>

</resources>