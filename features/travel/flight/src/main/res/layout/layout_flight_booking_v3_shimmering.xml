<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/shimmering_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_flight_booking_route_summary"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/item_flight_booking_route_summary_shimmering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3" />

        <include
            layout="@layout/item_flight_booking_route_summary_shimmering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/spacing_lvl2" />

    </LinearLayout>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_layout_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flight_dp_10"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:corners="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_1"
        app:width_weight="0.7" />

    <FrameLayout
        android:id="@+id/shimmering_layout_card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        android:background="@color/Unify_N0"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:background="@drawable/flight_bg_card_white"
            android:elevation="@dimen/flight_dp_1"
            android:padding="@dimen/spacing_lvl4">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/shimmering_layout_3"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="@dimen/flight_dp_10"
                android:layout_marginEnd="@dimen/spacing_lvl5"
                android:layout_marginRight="@dimen/spacing_lvl5"
                app:corners="20"
                app:layout_constraintEnd_toStartOf="@+id/shimmering_layout_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/shimmering_layout_4"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                app:corners="20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/shimmering_layout_3" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/shimmering_layout_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/flight_dp_10"
                android:layout_marginTop="@dimen/unify_space_12"
                app:corners="20"
                app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_3"
                app:width_weight="0.5" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/flight_dp_10"
                android:layout_marginTop="@dimen/unify_space_12"
                app:corners="20"
                app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_5"
                app:width_weight="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <View
        android:id="@+id/shimmering_layout_6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:background="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_card_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_layout_9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flight_dp_10"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:corners="20"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_6"
        app:width_weight="0.7" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_layout_7"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/flight_dp_10"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:corners="20"
        app:layout_constraintEnd_toStartOf="@+id/shimmering_layout_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_9"
        app:width_weight="0.5" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmering_layout_8"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:corners="20"
        app:layout_constraintBottom_toBottomOf="@+id/shimmering_layout_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmering_layout_7" />

    <LinearLayout
        android:id="@+id/shimmering_layout_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/flight_dp_20"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_7">

        <include layout="@layout/item_flight_booking_passenger_list_shimmering" />

        <include layout="@layout/item_flight_booking_passenger_list_shimmering" />

        <include layout="@layout/item_flight_booking_passenger_list_shimmering" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:background="@color/Unify_N50" />

        <include layout="@layout/item_flight_booking_insurance_shimmering" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:background="@color/Unify_N50" />

        <include layout="@layout/item_flight_booking_insurance_shimmering" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:background="@color/Unify_N50" />
    </LinearLayout>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/shimmering_layout_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_lvl2"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingTop="@dimen/flight_dp_10"
            android:paddingEnd="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            android:paddingBottom="@dimen/flight_dp_10">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                android:layout_marginRight="@dimen/spacing_lvl3"
                app:corners="20" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/flight_dp_10"
                android:layout_gravity="center_vertical"
                app:corners="20"
                app:width_weight="0.5" />

        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <View
        android:id="@+id/shimmering_layout_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_11" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/flight_dp_150"
        android:layout_height="@dimen/flight_dp_10"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/flight_dp_20"
        app:corners="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_12" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_layout_14"
        android:layout_width="@dimen/flight_dp_150"
        android:layout_height="@dimen/flight_dp_10"
        android:layout_marginTop="@dimen/flight_dp_20"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:corners="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_12" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/flight_dp_100"
        android:layout_height="@dimen/flight_dp_10"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"
        app:corners="20"
        app:layout_constraintBottom_toBottomOf="@+id/shimmering_layout_13"
        app:layout_constraintEnd_toStartOf="@+id/shimmering_layout_13"
        app:layout_constraintTop_toTopOf="@+id/shimmering_layout_13" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmering_layout_13"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:corners="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_layout_13" />

</androidx.constraintlayout.widget.ConstraintLayout>