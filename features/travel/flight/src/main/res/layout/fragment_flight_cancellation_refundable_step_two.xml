<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context="com.tokopedia.flight.cancellation.view.fragment.FlightCancellationReasonAndProofFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_16">

            <com.tokopedia.flight.widget.TkpdHintTextInputLayout
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:hint="@string/flight_cancellation_reason_label">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_saved_passenger"
                    style="@style/TextView.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:singleLine="true"
                    android:text="@string/flight_cancellation_reason_hint_label"
                    android:textColor="@color/Unify_N700_68"
                    app:editTextDrawableRightCompat="@drawable/ic_arrow_down_grey" />

            </com.tokopedia.flight.widget.TkpdHintTextInputLayout>


            <LinearLayout
                android:id="@+id/attachment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.tokopedia.unifyprinciples.Typography
                    app:typographyType="body_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flight_cancellation_support_docs_label"
                    android:textColor="@color/Unify_N700_44" />

                <com.tokopedia.unifyprinciples.Typography
                    app:typographyType="body_3"
                    android:id="@+id/attachment_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_lvl4"
                    android:text="@string/flight_cancellation_support_docs_description"
                    android:textColor="@color/Unify_N700_32"
                    android:textSize="@dimen/fontSize_lvl1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_attachments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_next"
            app:unifyButtonSize="large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/flight_cancellation_proof_reason_submit_button"
            android:layout_marginVertical="@dimen/spacing_lvl3"
            android:layout_marginHorizontal="@dimen/spacing_lvl4"/>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
