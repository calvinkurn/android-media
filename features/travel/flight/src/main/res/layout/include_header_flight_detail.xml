<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Unify_N0"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/flight_dp_30"
    android:paddingRight="@dimen/flight_dp_30"
    android:paddingTop="@dimen/spacing_lvl2"
    android:paddingBottom="@dimen/spacing_lvl2"
    app:layout_collapseMode="parallax"
    android:gravity="bottom"
    app:layout_collapseParallaxMultiplier="0.6">

    <LinearLayout
        android:layout_width="@dimen/layout_lvl0"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/departure_airport_code"
            style="@style/TextView.TitleBig.Bold"
            android:gravity="center"
            tools:text="CGK" />

        <TextView
            android:id="@+id/departure_airport_name"
            style="@style/TextView.Micro.BlackSecondary"
            android:gravity="center"
            tools:text="Jakarta"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>

    <com.tokopedia.flight.common.view.ArrowFlightView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"/>

    <LinearLayout
        android:layout_width="@dimen/layout_lvl0"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/arrival_airport_code"
            style="@style/TextView.TitleBig.Bold"
            tools:text="DPS" />

        <TextView
            android:id="@+id/arrival_airport_name"
            style="@style/TextView.Micro.BlackSecondary"
            android:gravity="center"
            tools:text="Denpasar"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>