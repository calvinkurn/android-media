<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context=".passenger.view.fragment.FlightBookingPassengerFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:paddingStart="@dimen/dp_14"
            android:paddingTop="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView.Micro.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingStart="@dimen/dp_5"
                android:text="@string/flight_passenger_data_diri_label" />

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_passenger_type"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:clickable="false"
                android:hint="@string/flight_passenger_tipe_penumpang_hint">

                <com.tokopedia.design.component.EditTextCompat
                    android:id="@+id/et_passenger_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text="@string/flightbooking_price_adult_label"
                    android:textColor="@color/font_black_disabled_38"
                    app:drawableRightCompat="@drawable/ic_arrow_down_grey"/>
            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <com.tokopedia.design.text.SpinnerTextView
                android:id="@+id/sp_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                app:spinner_hint="Pilih Titel" />


            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_first_name"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:hint="@string/flight_booking_passenger_first_name_hint">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/flight_booking_passenger_firstname_secondary_hint"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_last_name"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:hint="@string/flight_booking_passenger_last_name_hint">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/flight_booking_passenger_last_name_secondary_hint"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>


            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_birth_date"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:hint="@string/flight_booking_passenger_birthdate_hint">

                <com.tokopedia.design.component.EditTextCompat
                    android:id="@+id/et_birth_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/flight_booking_passenger_birthdate_secondary_hint"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    app:drawableRightCompat="@drawable/ic_arrow_down_grey" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_passport_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView.Micro.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingEnd="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16"
                android:paddingStart="@dimen/padding_16"
                android:text="@string/flight_passenger_data_passport_label" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextView.Micro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingEnd="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16"
                android:paddingStart="@dimen/padding_16"
                android:text="@string/flight_passenger_data_passport_description" />

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_passport_no"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:hint="@string/flight_passenger_passport_number_hint"
                android:paddingEnd="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16"
                android:paddingStart="@dimen/padding_16">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_passport_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/flight_passenger_passport_number_secondary_hint"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>


            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_passport_expiration_date"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:hint="@string/flight_passenger_passport_expiration_hint"
                android:paddingEnd="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16"
                android:paddingStart="@dimen/padding_16">

                <com.tokopedia.design.component.EditTextCompat
                    android:id="@+id/et_passport_expiration_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/flight_passenger_passport_expiration_secondary_hint"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    app:drawableRightCompat="@drawable/ic_arrow_down_grey" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>


            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_nationality"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:hint="@string/flight_passenger_nationality_hint"
                android:paddingEnd="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16"
                android:paddingStart="@dimen/padding_16">

                <com.tokopedia.design.component.EditTextCompat
                    android:id="@+id/et_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/flight_passenger_nationality_secondary_hint"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    app:drawableRightCompat="@drawable/ic_arrow_down_grey" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>


            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/til_passport_issuer_country"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:hint="@string/flight_passenger_passport_issuer_country_hint"
                android:paddingEnd="@dimen/padding_16"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16"
                android:paddingStart="@dimen/padding_16">

                <com.tokopedia.design.component.EditTextCompat
                    android:id="@+id/et_passport_issuer_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/flight_passenger_passport_issuer_country_secondary_hint"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    app:drawableRightCompat="@drawable/ic_arrow_down_grey" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_submit"
                style="@style/Button.Submit.Green"
                android:text="@string/flight_booking_passenger_submit_button" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>


