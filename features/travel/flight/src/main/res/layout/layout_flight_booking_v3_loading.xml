<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lvl5"
    android:clickable="true"
    android:focusable="true">

    <ProgressBar
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:gravity="center"
        android:text="@string/flight_booking_dialog_loading_title"
        android:textColor="@color/Unify_NN950_96"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_loading_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/spacing_lvl1"
        app:typographyType="body_2"
        android:textColor="@color/Unify_NN950_96"
        tools:text="Makan roti pakai meses\nPesananmu lagi diproses" />


</LinearLayout>