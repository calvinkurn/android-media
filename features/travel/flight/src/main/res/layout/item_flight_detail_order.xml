<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_flight_detail_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/flight_dp_20"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_16"
    android:paddingBottom="@dimen/padding_16">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/counter_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/flight_dp_20"
        android:paddingRight="@dimen/flight_dp_20"
        android:text="@string/flight_label_detail_order"
        android:textColor="@color/Unify_N700_96"
        android:textSize="18sp"
        app:typographyType="heading_2" />

    <LinearLayout
        android:id="@+id/layout_expendable_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/flight_dp_20"
        android:paddingRight="@dimen/flight_dp_20">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_expendable_passenger"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:paddingTop="@dimen/spacing_lvl2"
            android:paddingRight="@dimen/flight_dp_10"
            android:paddingBottom="@dimen/flight_dp_10"
            android:text="@string/flight_label_passenger_data"
            android:textColor="@color/Unify_N700_96"
            android:textStyle="normal"
            app:typographyType="heading_4" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/image_expendable_journey"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/flight_dp_20"
            android:layout_gravity="center_vertical"
            app:icon_color_light_enable="@color/Unify_G500"
            app:icon_color_night_enable="@color/Unify_G500"
            app:icon_name="CHEVRON_UP" />
    </LinearLayout>

    <View
        android:id="@+id/flight_detail_order_separator_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@drawable/flight_bg_line_seperator" />

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/recycler_view_flight_detail_journey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_flight_cek_syarat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:paddingLeft="@dimen/flight_dp_20"
        android:paddingTop="@dimen/flight_dp_20"
        android:paddingRight="@dimen/flight_dp_20"
        android:paddingBottom="@dimen/flight_dp_20"
        android:text="@string/flight_label_cek_t_and_c"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_3" />

</LinearLayout>