<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_20"
    android:background="@color/Unify_N0"
    android:paddingBottom="@dimen/padding_16"
    android:paddingTop="@dimen/padding_16">

    <TextView
        android:id="@+id/counter_flight"
        style="@style/TextView.TitleBig.Bold"
        android:text="@string/flight_label_detail_order"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/layout_expendable_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_expendable_passenger"
            style="@style/style_expandable_flight_detail_order_title"
            android:textStyle="normal"
            android:paddingTop="@dimen/dp_3"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/flight_label_passenger_data" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_expendable_passenger"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_arrow_up" />

    </LinearLayout>

    <View
        android:id="@+id/flight_detail_order_separator_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_line_separator" />

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/recycler_view_flight_detail_journey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/text_view_flight_cek_syarat"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="match_parent"
        android:background="@color/Unify_N0"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:text="@string/flight_label_cek_t_and_c" />

</LinearLayout>