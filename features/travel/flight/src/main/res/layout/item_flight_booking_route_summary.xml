<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl4"
    android:layout_marginBottom="@dimen/flight_dp_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_lvl2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_flight_airlines_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/flight_dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_flight_airline_name"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="@+id/iv_flight_airlines_logo"
            app:layout_constraintLeft_toRightOf="@+id/iv_flight_airlines_logo"
            app:layout_constraintStart_toEndOf="@+id/iv_flight_airlines_logo"
            app:layout_constraintTop_toTopOf="@+id/iv_flight_airlines_logo"
            app:typographyType="body_3"
            tools:text="AirAsia" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_lvl2"
            android:paddingLeft="@dimen/spacing_lvl2"
            android:text="@string/flight_label_detail"
            android:textColor="@color/Unify_G500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_flight_route_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:textColor="@color/Unify_N500"
            app:layout_constraintTop_toBottomOf="@+id/tv_flight_airline_name"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Jakarta (CGK) → London (LON)" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_flight_route_date_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:layout_constraintTop_toBottomOf="@+id/tv_flight_route_name"
            app:typographyType="body_3"
            tools:text="Kam, 23 Des 19 • 06:00-18:00 (+1 hari)" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_refundable"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/flight_dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_flight_route_date_detail"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_refundable_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintBottom_toBottomOf="@+id/iv_refundable"
            app:layout_constraintLeft_toRightOf="@+id/iv_refundable"
            app:layout_constraintStart_toEndOf="@+id/iv_refundable"
            app:layout_constraintTop_toTopOf="@+id/iv_refundable"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="Refundable" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_transit"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="@+id/iv_refundable"
            app:layout_constraintLeft_toRightOf="@+id/tv_refundable_info"
            app:layout_constraintStart_toEndOf="@+id/tv_refundable_info"
            app:layout_constraintTop_toTopOf="@+id/iv_refundable"
            app:srcCompat="@drawable/ic_flight_booking_transit"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_transit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintBottom_toBottomOf="@+id/iv_refundable"
            app:layout_constraintLeft_toRightOf="@+id/iv_transit"
            app:layout_constraintStart_toEndOf="@+id/iv_transit"
            app:layout_constraintTop_toTopOf="@+id/iv_refundable"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="Langsung" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>