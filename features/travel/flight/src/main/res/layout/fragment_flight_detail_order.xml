<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/button_submit"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_N50"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            android:orientation="vertical"
            android:paddingLeft="@dimen/flight_dp_10"
            android:paddingTop="@dimen/flight_dp_20"
            android:paddingRight="@dimen/flight_dp_10"
            android:paddingBottom="@dimen/flight_dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lvl4"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/flight_dp_10"
                android:paddingRight="@dimen/flight_dp_10">

                <ImageView
                    android:id="@+id/icon_status"
                    android:layout_width="@dimen/layout_lvl5"
                    android:layout_height="@dimen/layout_lvl5"
                    android:layout_marginEnd="@dimen/spacing_lvl2"
                    android:layout_marginRight="@dimen/spacing_lvl2"
                    app:srcCompat="@drawable/ic_flight_round" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/flight_label_status"
                        android:textColor="@color/Unify_N700_44"
                        app:typographyType="body_3" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/status_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Unify_N700_96"
                        app:typographyType="body_3"
                        tools:text="Tiket dibatalkan" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/spacing_lvl4"
                android:background="@drawable/flight_bg_line_seperator" />

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/cancellation_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_lvl2"
                android:autoLink="web"
                android:visibility="gone"
                app:closeButtonVisibility="gone"
                app:tickerShapeType="loose"
                app:tickerType="warning"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/flight_dp_10"
                android:paddingTop="@dimen/spacing_lvl1"
                android:paddingRight="@dimen/flight_dp_10"
                android:paddingBottom="@dimen/spacing_lvl1"
                android:weightSum="2">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="@dimen/layout_lvl0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/flight_label_transaction_date"
                    android:textColor="@color/Unify_N700_68"
                    app:typographyType="body_2" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/transaction_date"
                    android:layout_width="@dimen/layout_lvl0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_2"
                    app:typographyWeight="bold"
                    tools:text="1 Sep 2017, 05:00 WIB" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/payment_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/flight_dp_10"
                    android:paddingTop="@dimen/spacing_lvl1"
                    android:paddingRight="@dimen/flight_dp_10"
                    android:paddingBottom="@dimen/spacing_lvl1"
                    android:weightSum="2">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_payment_description_label"
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/Unify_N700_68"
                        app:typographyType="body_2"
                        tools:text="Rekening Tujuan" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_payment_description"
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/Unify_N700_96"
                        app:typographyType="body_2"
                        tools:text="1 Sep 2017, 05:00 WIB" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payment_cost_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/flight_dp_10"
                    android:paddingTop="@dimen/spacing_lvl1"
                    android:paddingRight="@dimen/flight_dp_10"
                    android:paddingBottom="@dimen/spacing_lvl1"
                    android:weightSum="2">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_payment_cost_label"
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jumlah Pembayaran"
                        android:textColor="@color/Unify_N700_68"
                        app:typographyType="body_2" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_payment_cost"
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/Unify_Y500"
                        app:typographyType="body_2"
                        app:typographyWeight="bold"
                        tools:text="Rp100.000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payment_due_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/flight_dp_10"
                    android:paddingTop="@dimen/spacing_lvl1"
                    android:paddingRight="@dimen/flight_dp_10"
                    android:paddingBottom="@dimen/spacing_lvl1"
                    android:weightSum="2">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/flight_order_detail_due_date_label"
                        android:textColor="@color/Unify_N700_68"
                        app:typographyType="body_2" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_payment_due_date"
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/Unify_N700_96"
                        app:typographyType="body_2"
                        app:typographyWeight="bold"
                        tools:text="1 Nov 2018" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:layout_marginBottom="@dimen/spacing_lvl4"
                android:background="@drawable/flight_bg_line_seperator" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/flight_dp_10"
                android:paddingRight="@dimen/flight_dp_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/container_send_eticket"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_lvl2"
                        android:layout_marginRight="@dimen/spacing_lvl2"
                        android:text="@string/flight_label_order_id_detail"
                        android:textColor="@color/Unify_N700_68"
                        app:typographyType="body_2" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/order_id_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_lvl2"
                        android:textColor="@color/Unify_N700_96"
                        app:typographyType="body_2"
                        tools:text="323088926194" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/copy_order_id"
                        android:layout_width="@dimen/layout_lvl2"
                        android:layout_height="@dimen/layout_lvl2"
                        app:srcCompat="@drawable/flight_ic_copy_order" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_send_eticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/flight_label_show_invoice"
                        android:textColor="@color/Unify_G500"
                        app:typographyType="body_3" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_lihat_e_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:background="@color/Unify_N0"
            android:orientation="horizontal"
            android:padding="@dimen/layout_lvl2"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_product_travel_flight_normal_eticket" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:text="Lihat E-Tiket"
                android:textColor="@color/Unify_G500"
                app:typographyType="body_2"
                app:typographyWeight="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            android:orientation="vertical">

            <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
                android:id="@+id/recycler_view_flight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Unify_N50"
                android:descendantFocusability="blocksDescendants"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/flight_dp_20"
            android:background="@color/Unify_N0"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_expendable_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/flight_dp_10"
                android:paddingRight="@dimen/flight_dp_20">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/title_expendable_passenger"
                    style="@style/style_expandable_flight_detail_order_title"
                    android:layout_width="@dimen/layout_lvl0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/flight_dp_10"
                    android:text="@string/flight_label_passenger_data"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="heading_3" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_expendable_passenger"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/flight_dp_20"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_arrow_up" />
            </LinearLayout>

            <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
                android:id="@+id/recycler_view_data_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/layout_lvl2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cancellation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/flight_dp_20"
            android:background="@color/Unify_N0"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="@dimen/flight_dp_20"
                android:paddingTop="@dimen/flight_dp_10"
                android:paddingRight="@dimen/flight_dp_20"
                android:paddingBottom="@dimen/flight_dp_10"
                android:text="@string/flight_order_detail_cancellation_label"
                android:textColor="@color/Unify_G500"
                android:textSize="@dimen/fontSize_lvl5"
                app:typographyType="heading_3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/layout_lvl1"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/flight_dp_20"
                app:srcCompat="@drawable/flight_shape_red_circle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/insurance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.tokopedia.common.travel.widget.TravelCrossSellWidget
            android:id="@+id/cross_sell_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:background="@color/Unify_N0"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/flight_dp_20">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/container_download_invoice"
                    android:text="@string/flight_label_detail_price"
                    android:textColor="@color/Unify_N700_96"
                    android:textSize="18sp"
                    app:typographyType="heading_3" />

                <LinearLayout
                    android:id="@+id/container_download_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="top"
                        android:layout_marginRight="@dimen/spacing_lvl2"
                        app:srcCompat="@drawable/flight_ic_download_eticket" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/flight_label_invoice"
                        android:textColor="@color/Unify_G500"
                        app:typographyType="body_3" />

                </LinearLayout>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="@dimen/flight_dp_20"
                android:paddingRight="@dimen/flight_dp_20" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/flight_dp_20">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/total_price"
                    android:text="@string/flight_label_price_total"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_2"
                    app:typographyWeight="bold" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="heading_2"
                    tools:text="Rp. 500.0000" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/flight_dp_20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/flight_dp_10">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_lvl2"
                    android:text="Untuk bantuan silakan klik"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/di_sini"
                    android:textColor="@color/Unify_G500"
                    app:typographyType="body_3" />
            </LinearLayout>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/button_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lvl4"
                android:layout_marginVertical="@dimen/spacing_lvl3"
                android:text="@string/flight_label_cancel_ticket"
                app:unifyButtonSize="large"
                app:unifyButtonType="alternate"
                app:unifyButtonVariant="ghost" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/button_reschedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lvl4"
                android:layout_marginVertical="@dimen/spacing_lvl3"
                android:text="@string/flight_label_reschedule_ticket"
                app:unifyButtonSize="large"

                app:unifyButtonType="alternate"
                app:unifyButtonVariant="ghost" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/button_reorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_lvl4"
                android:layout_marginVertical="@dimen/spacing_lvl3"
                android:text="@string/flight_label_reorder"
                android:visibility="gone"
                app:unifyButtonSize="large"
                app:unifyButtonType="transaction"
                app:unifyButtonVariant="filled"
                tools:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>