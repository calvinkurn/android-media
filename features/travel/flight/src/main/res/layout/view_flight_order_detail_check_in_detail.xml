<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:orientation="vertical"
    android:padding="@dimen/flight_dp_12">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgFlightOrderButtonViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        tools:text="Web Check In" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFlightOrderTopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/flight_dp_12"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            android:padding="@dimen/spacing_lvl4">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFlightOrderTopButtonLeftIcon"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_flight_order_detail_insurance" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tgFlightOrderTopButtonTopText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintBottom_toTopOf="@id/tgFlightOrderTopButtonBottomText"
                app:layout_constraintLeft_toRightOf="@id/ivFlightOrderTopButtonLeftIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Web Check-in" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tgFlightOrderTopButtonBottomText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tgFlightOrderTopButtonTopText"
                app:layout_constraintTop_toBottomOf="@id/tgFlightOrderTopButtonTopText"
                app:typographyType="body_3"
                tools:text="Check-in lebih awal lewat website." />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFlightOrderTopButtonRightIcon"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_system_action_arrow_right_grayscale_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFlightOrderBottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            android:padding="@dimen/spacing_lvl4">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFlightOrderBottomButtonLeftIcon"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_flight_order_detail_insurance" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tgFlightOrderBottomButtonTopText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintBottom_toTopOf="@id/tgFlightOrderBottomButtonBottomText"
                app:layout_constraintLeft_toRightOf="@id/ivFlightOrderBottomButtonLeftIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Web Check-in" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tgFlightOrderBottomButtonBottomText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tgFlightOrderBottomButtonTopText"
                app:layout_constraintTop_toBottomOf="@id/tgFlightOrderBottomButtonTopText"
                app:typographyType="body_3"
                tools:text="Check-in lebih awal lewat website." />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFlightOrderBottomButtonRightIcon"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_system_action_arrow_right_grayscale_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>