<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/flightSearchShimmeringContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/flightSearchLoaderTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginEnd="@dimen/spacing_lvl5"
            android:layout_marginRight="@dimen/spacing_lvl5"
            app:corners="20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/flightSearchLoaderDotDepartureTime"
            android:layout_width="@dimen/layout_lvl1"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="20"
            app:layout_constraintBottom_toBottomOf="@+id/flightSearchLoaderDepartureTime"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/flightSearchLoaderDepartureTime"
            app:use_gradient="true" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:background="@color/Unify_N700_20"
            app:layout_constraintBottom_toTopOf="@+id/flightSearchLoaderDotArrivalTime"
            app:layout_constraintLeft_toLeftOf="@+id/flightSearchLoaderDotDepartureTime"
            app:layout_constraintRight_toRightOf="@+id/flightSearchLoaderDotDepartureTime"
            app:layout_constraintTop_toBottomOf="@+id/flightSearchLoaderDotDepartureTime" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/flightSearchLoaderDotArrivalTime"
            android:layout_width="@dimen/layout_lvl1"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="20"
            app:layout_constraintBottom_toBottomOf="@+id/flightSearchLoaderArrivalTime"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/flightSearchLoaderArrivalTime"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/flightSearchLoaderDepartureTime"
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:corners="20"
            app:layout_constraintLeft_toRightOf="@+id/flightSearchLoaderDotDepartureTime"
            app:layout_constraintTop_toBottomOf="@+id/flightSearchLoaderTitle"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/flightSearchLoaderDuration"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:corners="20"
            app:layout_constraintLeft_toLeftOf="@+id/flightSearchLoaderDepartureTime"
            app:layout_constraintTop_toBottomOf="@+id/flightSearchLoaderDepartureTime"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/flightSearchLoaderArrivalTime"
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:corners="20"
            app:layout_constraintLeft_toLeftOf="@+id/flightSearchLoaderDepartureTime"
            app:layout_constraintTop_toBottomOf="@+id/flightSearchLoaderDuration"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/fightSearchLoaderStrikePrice"
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            app:corners="20"
            app:layout_constraintBottom_toTopOf="@+id/flightSearchLoaderPrice"
            app:layout_constraintRight_toRightOf="parent"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/flightSearchLoaderPrice"
            android:layout_width="@dimen/layout_lvl9"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="20"
            app:layout_constraintBottom_toBottomOf="@+id/flightSearchLoaderArrivalTime"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/flightSearchLoaderDepartureTime"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/flightSearchLoaderDetail"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:corners="20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flightSearchLoaderPrice"
            app:use_gradient="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_N700_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flightSearchShimmeringContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>