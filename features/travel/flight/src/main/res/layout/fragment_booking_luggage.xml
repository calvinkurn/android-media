<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_weight="1" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_marginVertical="@dimen/spacing_lvl3"
        android:layout_marginHorizontal="@dimen/fontSize_lvl4"
        app:unifyButtonSize="large"
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/select_passenger_submit_button" />
</LinearLayout>