<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/partial_flight_header_insurance" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/line_divider" />

    <LinearLayout
        android:id="@+id/other_protection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_4">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_protection_label"
            style="@style/TextView.Small.Green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_weight="1"
            android:gravity="end"
            android:textAlignment="textEnd"
            tools:text="Teramsuk 5 Proteksi Lain" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_protection_expand"
            style="@style/TextView.Small.Green"
            android:layout_width="12dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_down_detail_flight" />
    </LinearLayout>

    <View
        android:id="@+id/divider_benefit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/line_divider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_benefits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8" />
</LinearLayout>