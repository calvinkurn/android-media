<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/flight_dp_20"
    android:background="@color/Unify_N0"
    android:orientation="vertical"
    android:padding="@dimen/flight_dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:letterSpacing="-0.01"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/fontSize_lvl5"
            app:typographyType="heading_4"
            tools:text="Asuransi Perjalanan" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/ic_flight_insurance_protection_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_lvl2"
            android:text="@string/flight_detail_order_protection_label"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/fontSize_lvl5"
            app:typographyType="heading_4" />
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="body_2"
        android:textColor="@color/Unify_N700_68"
        android:id="@+id/tv_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="body_3"
        android:background="@drawable/bg_flight_insurance_card_success"
        android:textColor="@color/Unify_N700_96"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/flight_order_detail_insurance_description" />
</LinearLayout>