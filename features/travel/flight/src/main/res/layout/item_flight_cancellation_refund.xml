<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl2"
    android:layout_marginLeft="@dimen/spacing_lvl2"
    android:layout_marginEnd="@dimen/spacing_lvl2"
    android:layout_marginRight="@dimen/spacing_lvl2"
    android:layout_marginBottom="@dimen/spacing_lvl3"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/spacing_lvl2"
        android:layout_height="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/flight_dp_10"
        android:layout_marginRight="@dimen/spacing_lvl2"
        android:src="@drawable/ic_flight_circle_black" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="afads" />
</LinearLayout>