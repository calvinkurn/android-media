<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFlightOrderPassengerCancelStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgFlightOrderPassengerNumber"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvFlightOrderPassengerCancelStatus"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="1." />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgFlightOrderPassengerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tgFlightOrderPassengerNumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tgFlightOrderPassengerNumber"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Tn. Muhammad Furqan" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFlightOrderPassengerAmenity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintLeft_toLeftOf="@id/tgFlightOrderPassengerName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tgFlightOrderPassengerName" />

</androidx.constraintlayout.widget.ConstraintLayout>