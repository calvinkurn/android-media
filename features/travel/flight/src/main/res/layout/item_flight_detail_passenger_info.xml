<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spacing_lvl2">

    <LinearLayout
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="CGK - DPS" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/view_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:text=":"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            app:typographyWeight="bold" />
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/desc_info"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_3"
        tools:text="34 inci" />
</LinearLayout>