<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    android:id="@+id/card_promo_chips"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:card_type="border"
    android:elevation="@dimen/flight_dp_8"
    android:background="@color/Unify_N0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/iv_multiairline_logo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/layout_lvl1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_flight_promo_chips_title"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginEnd="@dimen/dp_12"
            app:use_gradient="true"
            app:width_weight="0.6"
            app:corners="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_multiairline_logo"
            app:layout_constraintTop_toTopOf="@+id/iv_multiairline_logo" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_flight_promo_chips_line2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="8dp"
            app:corners="8"
            app:layout_constraintStart_toStartOf="@+id/tv_flight_promo_chips_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_flight_promo_chips_title"
            app:use_gradient="true"
            app:width_weight="0.3" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_flight_promo_chip_start"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_multiairline_logo"
            app:layout_constraintTop_toBottomOf="@+id/tv_flight_promo_chips_line2"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>
