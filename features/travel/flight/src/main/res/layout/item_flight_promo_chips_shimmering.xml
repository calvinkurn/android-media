<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_180"
    app:cardCornerRadius="@dimen/layout_lvl1"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginLeft="@dimen/layout_lvl2"
    android:layout_marginStart="@dimen/layout_lvl2"
    android:layout_marginRight="@dimen/layout_lvl2"
    android:layout_marginEnd="@dimen/layout_lvl2"
    app:cardBackgroundColor="@color/cardview_light_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/image_shimmer"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/layout_lvl0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.51"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/title_shimmer"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/image_shimmer"
            app:layout_constraintStart_toEndOf="@+id/image_shimmer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:use_gradient="true"
            app:width_weight="0.6"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/type_shimmer"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:textSize="@dimen/sp_10"
            app:use_gradient="true"
            app:layout_constraintLeft_toLeftOf="@+id/title_shimmer"
            app:layout_constraintStart_toStartOf="@+id/title_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/title_shimmer"
            app:layout_constraintRight_toRightOf="@+id/title_shimmer"
            app:layout_constraintEnd_toEndOf="@+id/title_shimmer"
            app:width_weight="0.3"
            app:corners="8"/>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/location_shimmer"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/layout_lvl1"
            app:use_gradient="true"
            app:layout_constraintLeft_toLeftOf="@+id/title_shimmer"
            app:layout_constraintStart_toStartOf="@+id/title_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/type_shimmer"
            app:layout_constraintRight_toRightOf="@+id/title_shimmer"
            app:layout_constraintEnd_toEndOf="@+id/title_shimmer"
            app:width_weight="0.3"
            app:corners="8"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>