<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvFlightOriginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/flight_search_origin_label"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvFlightOriginAirport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFlightOriginLabel"
        app:typographyType="body_2"
        tools:text="SUB\nSurabaya" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgFlightReverseAirport"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:background="@drawable/ic_flight_circle_grey"
        android:padding="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="@+id/tvFlightOriginAirport"
        app:layout_constraintLeft_toRightOf="@+id/tvFlightOriginAirport"
        app:layout_constraintRight_toLeftOf="@+id/tvFlightDestinationAirport"
        app:layout_constraintTop_toTopOf="@+id/tvFlightOriginLabel"
        app:srcCompat="@drawable/ic_flight_reverse_new" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvFlightDestinationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"

        android:text="@string/flight_search_origin_label"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvFlightDestinationAirport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFlightDestinationLabel"
        app:typographyType="body_2"
        tools:text="SUB\nSurabaya" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFlightDestinationAirport"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:background="@drawable/bg_line_separator" />


</androidx.constraintlayout.widget.ConstraintLayout>