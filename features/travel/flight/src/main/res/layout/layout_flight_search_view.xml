<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_lvl4">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightOriginLabel"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/flight_search_origin_label"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imgFlightReverseAirport"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightOriginAirport"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imgFlightReverseAirport"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightOriginLabel"
            app:typographyType="body_2"
            tools:text="SUB\nSurabaya" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgFlightReverseAirport"
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4"
            android:background="@drawable/ic_flight_circle_grey"
            android:padding="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="@+id/tvFlightOriginAirport"
            app:layout_constraintLeft_toRightOf="@+id/tvFlightOriginAirport"
            app:layout_constraintRight_toLeftOf="@+id/tvFlightDestinationAirport"
            app:layout_constraintTop_toTopOf="@+id/tvFlightOriginLabel"
            app:srcCompat="@drawable/ic_flight_reverse_new" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightDestinationLabel"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/flight_search_airport_arrival_title"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintLeft_toRightOf="@+id/imgFlightReverseAirport"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightDestinationAirport"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintLeft_toRightOf="@+id/imgFlightReverseAirport"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightDestinationLabel"
            app:typographyType="body_2"
            tools:text="SUB\nSurabaya" />

        <View
            android:id="@+id/separatorAirport"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:background="@drawable/flight_bg_line_seperator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightDestinationAirport" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icFlightDepartureDate"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:layout_constraintBottom_toBottomOf="@+id/tvFlightDepartureDate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvFlightDepartureDateLabel"
            app:srcCompat="@drawable/ic_flight_calendar_departure" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightDepartureDateLabel"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:gravity="start"
            android:text="@string/flight_search_departure_label"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintLeft_toRightOf="@+id/icFlightDepartureDate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separatorAirport"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightDepartureDate"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:gravity="start"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintLeft_toRightOf="@+id/icFlightDepartureDate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightDepartureDateLabel"
            app:typographyType="body_1"
            tools:text="11 Nov 2019" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightRoundTripLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:gravity="start"
            android:text="@string/flight_search_return"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintBottom_toTopOf="@+id/switchFlightRoundTrip"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separatorAirport"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
            android:id="@+id/switchFlightRoundTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toTopOf="@+id/separatorDepartureDate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightRoundTripLabel" />

        <View
            android:id="@+id/separatorDepartureDate"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:background="@drawable/flight_bg_line_seperator"
            app:layout_constraintLeft_toRightOf="@+id/icFlightDepartureDate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightDepartureDate" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icFlightReturnDate"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:layout_constraintBottom_toBottomOf="@+id/tvFlightReturnDate"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvFlightReturnDateLabel"
            app:srcCompat="@drawable/ic_flight_calendar_return" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightReturnDateLabel"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:gravity="start"
            android:text="@string/flight_search_return_label"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintLeft_toRightOf="@+id/icFlightReturnDate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separatorDepartureDate"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightReturnDate"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:gravity="start"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintLeft_toRightOf="@+id/icFlightReturnDate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightReturnDateLabel"
            app:typographyType="body_1"
            tools:text="11 Nov 2020" />

        <View
            android:id="@+id/separatorReturnDate"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:background="@drawable/flight_bg_line_seperator"
            app:layout_constraintLeft_toRightOf="@+id/icFlightReturnDate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightReturnDate" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icFlightPassenger"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:layout_constraintBottom_toBottomOf="@+id/tvFlightPassenger"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvFlightPassengerLabel"
            app:srcCompat="@drawable/ic_flight_passenger" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightPassengerLabel"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:gravity="start"
            android:text="@string/flight_search_passenger_label"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintLeft_toRightOf="@+id/icFlightPassenger"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separatorReturnDate"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightPassenger"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:gravity="start"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintLeft_toRightOf="@+id/icFlightPassenger"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightPassengerLabel"
            app:typographyType="body_1"
            tools:text="2 dewasa, 1 anak, 0 bayi" />

        <View
            android:id="@+id/separatorPassenger"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:background="@drawable/flight_bg_line_seperator"
            app:layout_constraintLeft_toRightOf="@+id/icFlightPassenger"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightPassenger" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icFlightClass"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:layout_constraintBottom_toBottomOf="@+id/tvFlightClass"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvFlightClassLabel"
            app:srcCompat="@drawable/ic_flight_class" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightClassLabel"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:gravity="start"
            android:text="@string/flight_search_passenger_class_title"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintLeft_toRightOf="@+id/icFlightClass"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separatorPassenger"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFlightClass"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:gravity="start"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintLeft_toRightOf="@+id/icFlightClass"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightClassLabel"
            app:typographyType="body_1"
            tools:text="Ekonomi" />

        <View
            android:id="@+id/separatorClass"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:background="@drawable/flight_bg_line_seperator"
            app:layout_constraintLeft_toRightOf="@+id/icFlightClass"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFlightClass" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnFlightSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:text="@string/flight_search_search_ticket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separatorClass"
            app:unifyButtonSize="large" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>