<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/flight_dp_14"
    android:paddingLeft="@dimen/layout_lvl2"
    android:paddingRight="@dimen/layout_lvl2"
    android:paddingTop="@dimen/unify_space_12">

    <TextView
        android:id="@+id/tv_passenger_name"
        style="@style/TextView.Small.Bold"
        android:padding="@dimen/spacing_lvl1"
        tools:text="@string/flight_label_departure_flight" />

    <TextView
        android:id="@+id/tv_passenger_type"
        style="@style/TextView.Small"
        android:padding="@dimen/spacing_lvl1"
        android:textColor="@color/Unify_N700_44"
        tools:text="@string/flight_label_departure_flight" />

</LinearLayout>