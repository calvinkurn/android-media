<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_lvl2"
    android:paddingTop="@dimen/unify_space_12"
    android:paddingRight="@dimen/layout_lvl2"
    android:paddingBottom="@dimen/flight_dp_14">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_passenger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lvl1"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="@string/flight_label_departure_flight" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_passenger_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lvl1"
        android:textColor="@color/Unify_N700_44"
        app:typographyType="body_2"
        tools:text="@string/flight_label_departure_flight" />

</LinearLayout>