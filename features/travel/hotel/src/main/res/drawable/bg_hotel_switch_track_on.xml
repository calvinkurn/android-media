<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center_vertical|fill_horizontal"
        android:start="4dp"
        android:end="4dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/switch_track_radius"
                android:topRightRadius="@dimen/switch_track_radius"
                android:bottomLeftRadius="@dimen/switch_track_radius"
                android:bottomRightRadius="@dimen/switch_track_radius"/>
            <size
                android:width="@dimen/switch_track_width"
                android:height="@dimen/switch_track_height" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:endColor="@color/hotel_green_250"
                android:startColor="@color/hotel_lightish_green"/>
        </shape>
    </item>
</layer-list>