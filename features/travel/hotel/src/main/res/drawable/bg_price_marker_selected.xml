<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="@dimen/layout_lvl2">
        <shape android:shape="rectangle">
            <solid android:color="@color/hotel_dms_active_price_marker_color"/>
            <size android:height="@dimen/hotel_28dp"/>
            <padding android:left="@dimen/layout_lvl1" android:right="@dimen/layout_lvl1" android:top="@dimen/spacing_lvl2" android:bottom="@dimen/spacing_lvl2"/>
            <corners android:radius="@dimen/layout_lvl5" />
        </shape>
    </item>
    <item android:gravity="center_horizontal|bottom">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%" >
            <shape android:shape="rectangle">
                <solid android:color="@color/hotel_dms_active_price_marker_color"/>
                <size android:height="@dimen/hotel_10dp" android:width="@dimen/hotel_10dp"/>
                <corners android:radius="@dimen/hotel_1dp" />
            </shape>
        </rotate>
    </item>
</layer-list>