<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="@dimen/hotel_8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/hotel_color_active_price_marker"/>
            <size android:height="@dimen/hotel_18dp"/>
            <padding android:left="@dimen/hotel_8dp" android:right="@dimen/hotel_8dp"/>
            <corners android:radius="@dimen/hotel_10dp" />
        </shape>
    </item>
    <item android:gravity="center_horizontal|bottom">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%" >
            <shape android:shape="rectangle">
                <solid android:color="@color/hotel_color_active_price_marker"/>
                <size android:height="@dimen/hotel_10dp" android:width="@dimen/hotel_10dp"/>
                <corners android:radius="@dimen/hotel_1dp" />
            </shape>
        </rotate>
    </item>
</layer-list>