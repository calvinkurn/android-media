<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/layout_lvl2"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hotel_cancellation_property_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="heading_4"
        android:textColor="@color/Unify_N700_96"
        tools:text="Avissa Suites" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hotel_cancellation_room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        tools:text="Kamar Deluxe Double"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_96"
        />

    <LinearLayout
        android:id="@+id/content_cancellation_pay_at_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/spacing_lvl2">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:text="@string/hotel_cancellation_page_pay_at_hotel"
            app:drawableLeftCompat="@drawable/ic_hotel_16dp"
            android:drawablePadding="@dimen/spacing_lvl2"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_N700_96"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/hotel_cancellation_page_required_cc"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"/>


    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hotel_cancellation_room_guest_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="2 Kamar . 2 Tamu"
        app:typographyType="body_3"
        android:textColor="@color/Unify_N700_68"
        android:layout_marginTop="@dimen/spacing_lvl2"
        />

</LinearLayout>