<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/hotel_260dp"
    android:layout_height="@dimen/hotel_140dp"
    android:layout_margin="@dimen/layout_lvl1"
    app:cardCornerRadius="@dimen/layout_lvl1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/hotel_12dp">

        <LinearLayout
            android:id="@+id/container_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_review_title"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="heading_4"
                tools:text="Sangat Baik" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_review_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/hotel_12dp"
                android:layout_marginLeft="@dimen/hotel_12dp"
                android:background="@drawable/bg_hotel_blue_radius"
                android:paddingLeft="@dimen/layout_lvl1"
                android:paddingTop="@dimen/hotel_1dp"
                android:paddingRight="@dimen/layout_lvl1"
                android:paddingBottom="@dimen/hotel_1dp"
                android:textColor="@color/Unify_B600"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="8,6" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_review_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container_top"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_2"
            tools:text="Kami cukup puas dengan fasilitas yang disediakan oleh hotel tersebut. Kami cukup puas dengan fasilitas yang disediakan oleh hotel tersebut. " />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_review_reviewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_review_date"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Ignatius Andrew" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            tools:text="8 Sep 2018" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>