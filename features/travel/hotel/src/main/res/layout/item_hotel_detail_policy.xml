<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_lvl2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iv_policy_icon"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_gravity="center"
            app:icon_name="LOCATION_FILLED"
            app:icon_color_light_enable="@color/hotel_dms_icon_color"
            app:icon_color_night_enable="@color/hotel_dms_icon_color"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_policy_name"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart= "@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/spacing_lvl1"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_4"
            tools:text="Fasilitas Umum" />

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_policy_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl3"
        android:layout_marginLeft="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:lineSpacingExtra="@dimen/spacing_lvl2"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N700_68"
        tools:text="Fasilitas Umum" />

</LinearLayout>