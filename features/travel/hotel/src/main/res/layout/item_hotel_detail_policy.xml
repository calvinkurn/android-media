<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_lvl2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_policy_icon"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_hotel_location" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_policy_name"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart= "@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/spacing_lvl1"
            app:fontSize="title"
            app:textViewTheme="lightPrimary"
            app:weight="medium"
            tools:text="Fasilitas Umum" />

    </LinearLayout>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/tv_policy_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl3"
        android:layout_marginLeft="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:lineSpacingExtra="@dimen/spacing_lvl2"
        app:fontSize="small"
        tools:text="Fasilitas Umum" />

</LinearLayout>