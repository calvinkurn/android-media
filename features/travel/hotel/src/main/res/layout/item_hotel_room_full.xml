<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hotel_room_list_image_height">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/room_list_room_full_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:background="@color/Green_G500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:background="#cc52565e">

        <com.tokopedia.design.component.TextViewCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_4"
            android:letterSpacing="0.1"
            android:text="@string/hotel_room_full_text_view"
            app:fontSize="small"
            app:textViewTheme="darkPrimary"
            app:weight="medium" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/room_full_room_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            app:fontSize="small"
            app:textViewTheme="darkPrimary"
            tools:text="ABDFNSJFNSKDFNSKFN SOVNSJDNFsd jsdnfjksnfkjsn dfjnsfn sdjfn" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>