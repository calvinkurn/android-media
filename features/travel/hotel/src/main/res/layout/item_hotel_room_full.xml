<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hotel_room_list_image_height">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/room_list_room_full_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:background="@color/Unify_G500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:background="@color/Unify_N500_68">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:letterSpacing="0.1"
            android:text="@string/hotel_room_full_text_view"
            android:textColor="@color/Unify_N0"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/room_full_room_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            app:typographyType="body_2"
            android:textColor="@color/Unify_N0"
            tools:text="ABDFNSJFNSKDFNSKFN SOVNSJDNFsd jsdnfjksnfkjsn dfjnsfn sdjfn" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>