<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_lvl2">
        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/loader_image_view_1"
            android:layout_width="@dimen/hotel_30dp"
            android:layout_height="@dimen/hotel_30dp"
            app:corners="45"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/hotel_120dp"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            android:layout_marginStart="@dimen/hotel_12dp"
            android:layout_marginLeft="@dimen/hotel_12dp"
            app:layout_constraintLeft_toRightOf="@+id/loader_image_view_1"
            app:layout_constraintStart_toEndOf="@+id/loader_image_view_1"
            app:layout_constraintTop_toTopOf="@+id/loader_image_view_1"
            app:layout_constraintBottom_toBottomOf="@+id/loader_image_view_1"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/hotel_60dp"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            android:layout_marginStart="@dimen/hotel_12dp"
            android:layout_marginLeft="@dimen/hotel_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/loader_image_view_1"
            app:layout_constraintBottom_toBottomOf="@+id/loader_image_view_1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_1dp"
        android:background="@drawable/bg_hotel_line_seperator"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_lvl4"
        android:paddingLeft="@dimen/layout_lvl2"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingRight="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2">
        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_1"
            android:layout_width="@dimen/hotel_120dp"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            android:layout_marginStart="@dimen/hotel_12dp"
            android:layout_marginLeft="@dimen/hotel_12dp"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="@dimen/hotel_60dp"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            android:layout_marginStart="@dimen/hotel_12dp"
            android:layout_marginLeft="@dimen/hotel_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            android:layout_marginTop="@dimen/layout_lvl3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_text_view_1"
            app:width_weight="1"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            android:layout_marginTop="@dimen/layout_lvl1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_text_view_2"
            app:width_weight="1"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            android:layout_marginTop="@dimen/layout_lvl1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_text_view_3"
            app:width_weight="0.3"
            />
        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_text_view_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            android:layout_marginTop="@dimen/layout_lvl1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_text_view_4"
            app:width_weight="0.1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>