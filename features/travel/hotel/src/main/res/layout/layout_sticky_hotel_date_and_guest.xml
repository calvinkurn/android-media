<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_1dp"
        android:background="@drawable/bg_hotel_line_seperator" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/hotel_18dp"
        android:paddingLeft="@dimen/hotel_18dp"
        android:paddingTop="@dimen/hotel_12dp"
        android:paddingEnd="@dimen/hotel_18dp"
        android:paddingRight="@dimen/hotel_18dp"
        android:paddingBottom="@dimen/hotel_12dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/hotel_date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:layout_marginRight="@dimen/spacing_lvl2"
                app:srcCompat="@drawable/ic_hotel_calendar" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/hotel_6dp"
                android:lines="1"
                app:typographyType="body_3"
                android:textColor="@color/Unify_N700_68"
                tools:text="18 Des 2019 - 20 Jan 2020" />
        </LinearLayout>

        <View
            android:id="@+id/seperator"
            android:layout_width="@dimen/hotel_1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/hotel_12dp"
            android:layout_marginLeft="@dimen/hotel_12dp"
            android:layout_marginEnd="@dimen/hotel_12dp"
            android:layout_marginRight="@dimen/hotel_12dp"
            android:background="@drawable/bg_hotel_line_seperator" />

        <LinearLayout
            android:id="@+id/hotel_room_and_guest_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/layout_lvl2"
                    android:layout_height="@dimen/layout_lvl2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/spacing_lvl2"
                    app:srcCompat="@drawable/ic_hotel_room" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/total_room_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/hotel_6dp"
                    android:lines="1"
                    android:paddingEnd="@dimen/layout_lvl1"
                    android:paddingRight="@dimen/layout_lvl1"
                    app:typographyType="body_3"
                    android:textColor="@color/Unify_N700_68"
                    tools:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/layout_lvl2"
                    android:layout_height="@dimen/layout_lvl2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_lvl2"
                    android:layout_marginLeft="@dimen/spacing_lvl2"
                    android:layout_marginRight="@dimen/spacing_lvl2"
                    app:srcCompat="@drawable/ic_hotel_adult" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/total_guest_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/hotel_6dp"
                    android:lines="1"
                    android:paddingEnd="@dimen/layout_lvl1"
                    android:paddingRight="@dimen/layout_lvl1"
                    app:typographyType="body_3"
                    android:textColor="@color/Unify_N700_68"
                    tools:text="2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_1dp"
        android:background="@drawable/bg_hotel_line_seperator" />

</LinearLayout>