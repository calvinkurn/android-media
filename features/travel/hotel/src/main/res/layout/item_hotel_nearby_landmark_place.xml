<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/layout_lvl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_hotel_nearby_place"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_hotel_hygiene_verified" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_hotel_nearby_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toEndOf="@+id/iv_hotel_nearby_place"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="Stasiun MRT Benhil"
        android:ellipsize="end"
        android:maxLines="1"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_hotel_nearby_place_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="12 km" />
</androidx.constraintlayout.widget.ConstraintLayout>