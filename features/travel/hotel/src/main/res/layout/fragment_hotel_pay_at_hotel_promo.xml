<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:padding="@dimen/spacing_lvl4">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPayAtHotelPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        android:layout_marginRight="@dimen/spacing_lvl5"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/tvHotelPayAtHotelPromoTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_payathotel_no_promo" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvHotelPayAtHotelPromoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:gravity="center"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toTopOf="@+id/btnHotelPayAtHotelPromo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPayAtHotelPromo"
        app:typographyType="heading_2"
        android:text="@string/hotel_payathotel_promo_desc"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnHotelPayAtHotelPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHotelPayAtHotelPromoTitle"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        android:text="@string/hotel_payathotel_promo_button_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>