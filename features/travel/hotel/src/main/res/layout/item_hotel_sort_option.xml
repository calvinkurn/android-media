<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_lvl3"
        android:paddingBottom="@dimen/layout_lvl3">
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_view_title"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_weight="1"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:textColor="@color/Unify_N700_96"
            tools:text="1234567" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_check"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:srcCompat="@drawable/ic_check" />
    </LinearLayout>

    <View
        android:id="@+id/v_first_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_1dp"
        android:background="@drawable/bg_hotel_line_seperator" />

</LinearLayout>