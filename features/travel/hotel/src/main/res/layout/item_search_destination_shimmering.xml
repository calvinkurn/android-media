<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/layout_lvl2">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="@dimen/hotel_30dp"
        android:layout_height="@dimen/hotel_30dp"
        app:loader_corner_radius="22dp"
        app:loader_type="rect"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/hotel_12dp"
        android:layout_marginLeft="@dimen/hotel_12dp"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnifyTextView1"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            app:loader_corner_radius="2dp"
            app:loader_type="rect"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnifyTextView2"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/layout_lvl1"
            app:layout_constraintTop_toBottomOf="@id/loaderUnifyTextView1"
            app:layout_constraintStart_toStartOf="parent"
            app:loader_corner_radius="2dp"
            app:loader_type="rect"
            app:layout_constraintWidth_percent="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>