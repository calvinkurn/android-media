<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/layout_lvl2">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="@dimen/hotel_30dp"
        android:layout_height="@dimen/hotel_30dp"
        app:corners="45"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/hotel_12dp"
        android:layout_marginLeft="@dimen/hotel_12dp"
        android:orientation="vertical">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            app:width_weight="0.8"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="@dimen/layout_lvl1"
            app:corners="4"
            app:width_weight="0.6" />

    </LinearLayout>

</LinearLayout>