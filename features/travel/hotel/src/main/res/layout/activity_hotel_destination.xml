<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.tokopedia.header.HeaderUnify
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_hotel_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unify_header_is_show_back_button="true"
        app:unify_header_is_show_shadow="true" />

    <com.tokopedia.hotel.destination.view.widget.HotelSearchInputView
        android:id="@+id/search_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_lvl2"
        android:paddingTop="@dimen/layout_lvl2"
        android:paddingRight="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/hotel_12dp"
        tools:layout_height="@dimen/hotel_70dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_1dp"
        android:background="@drawable/bg_hotel_line_seperator" />

    <FrameLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>