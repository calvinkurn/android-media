<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0"
    android:orientation="vertical">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_160dp"
        android:layout_marginBottom="@dimen/spacing_lvl1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/hotel_76dp"
            android:layout_weight="1" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/hotel_76dp"
            android:layout_marginLeft="@dimen/spacing_lvl1"
            android:layout_marginRight="@dimen/spacing_lvl1"
            android:layout_weight="1" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/hotel_76dp"
            android:layout_weight="1" />

    </LinearLayout>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/hotel_160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/hotel_120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_1dp"
        android:layout_marginTop="@dimen/layout_lvl4"
        android:background="@color/hotel_grey_200" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotel_100dp"
        android:layout_margin="@dimen/layout_lvl2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/hotel_120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl2" />

</LinearLayout>