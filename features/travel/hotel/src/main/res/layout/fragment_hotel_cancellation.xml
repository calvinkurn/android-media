<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_hotel_cancellation_summary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dash_stroke_hotel"/>

        <com.tokopedia.hotel.common.presentation.widget.RoomDurationView
            android:id="@+id/hotel_cancellation_room_duration_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Neutral_N0" />

        <!--    will be updated to 6pt-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl3"
            android:background="@color/Neutral_N50"/>

        <com.tokopedia.hotel.cancellation.presentation.widget.HotelCancellationPolicyWidget
            android:id="@+id/hotel_cancellation_policy_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--    will be updated to 6pt-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl3"
            android:background="@color/Neutral_N50"/>

        <include layout="@layout/layout_hotel_cancellation_refund_detail"/>
    </LinearLayout>
</ScrollView>