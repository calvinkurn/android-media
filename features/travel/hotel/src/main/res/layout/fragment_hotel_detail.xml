<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/hotelDetailTicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerShapeType="full"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:visibility="visible">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:theme="@style/ThemeOverlay.AppCompat.Light">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentScrim="@color/Unify_N0"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/toolbar_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Unify_N0"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.6">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_main_photo_preview"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hotel_160dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@color/Unify_N50" />

                        <LinearLayout
                            android:id="@+id/hotel_photo_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl1"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/iv_main_photo_preview">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_first_photo_preview"
                                android:layout_width="@dimen/layout_lvl0"
                                android:layout_height="@dimen/hotel_76dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                app:srcCompat="@color/Unify_N50" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_second_photo_preview"
                                android:layout_width="@dimen/layout_lvl0"
                                android:layout_height="@dimen/hotel_76dp"
                                android:layout_marginLeft="@dimen/spacing_lvl1"
                                android:layout_marginRight="@dimen/spacing_lvl1"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                app:srcCompat="@color/Unify_N50" />

                            <RelativeLayout
                                android:layout_width="@dimen/layout_lvl0"
                                android:layout_height="@dimen/hotel_76dp"
                                android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_third_photo_preview"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/hotel_76dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@color/Unify_N50" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_third_photo_preview_black_layer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignTop="@+id/iv_third_photo_preview"
                                    android:layout_alignBottom="@+id/iv_third_photo_preview"
                                    android:alpha="0.7"
                                    android:background="@color/Unify_N700"
                                    android:clickable="false"
                                    android:focusable="false" />

                                <com.tokopedia.unifyprinciples.Typography
                                    android:id="@+id/tv_more_image_counter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:textColor="@color/Unify_N0"
                                    app:typographyType="heading_6"
                                    tools:text="+20" />

                            </RelativeLayout>
                        </LinearLayout>

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/hotel_detail_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/layout_lvl3"
                            android:layout_marginRight="@dimen/layout_lvl3"
                            android:background="@drawable/bg_hotel_property_tag_half_radius"
                            android:ellipsize="end"
                            android:lines="1"
                            android:maxWidth="@dimen/hotel_300dp"
                            android:maxLines="1"
                            android:paddingStart="@dimen/hotel_12dp"
                            android:paddingLeft="@dimen/hotel_12dp"
                            android:paddingTop="@dimen/spacing_lvl2"
                            android:paddingEnd="@dimen/layout_lvl2"
                            android:paddingRight="@dimen/layout_lvl2"
                            android:paddingBottom="@dimen/spacing_lvl2"
                            android:textColor="@color/Unify_R400"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="@+id/hotel_photo_layout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/hotel_photo_layout"
                            app:typographyType="small"
                            app:typographyWeight="bold"
                            tools:text="Hargae oooo uuuuu lalala yeyeye okokok wwkwkapp:layout_constraintHorizontal_biaswkkwk nicae okay bye"
                            tools:visibility="visible" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/detail_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:elevation="@dimen/spacing_lvl2"
                        android:gravity="top"
                        app:contentInsetLeft="@dimen/layout_lvl0"
                        app:contentInsetStart="@dimen/layout_lvl0"
                        app:contentInsetStartWithNavigation="@dimen/layout_lvl0"
                        app:elevation="@dimen/spacing_lvl2"
                        app:layout_anchor="@+id/toolbar_container"
                        app:layout_collapseMode="pin"
                        app:subtitleTextAppearance="@style/TitleTextAppearance.White"
                        app:titleTextAppearance="@style/SubTitleTextAppearance" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <include
                android:id="@+id/container_hotel_detail_shimmering"
                layout="@layout/layout_shimmering_hotel_detail"
                android:visibility="visible"
                tools:visibility="gone" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/hotelDetailNestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Unify_N0"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/hotel_100dp"
                android:visibility="gone"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/layout_lvl2"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingRight="@dimen/layout_lvl2">

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tv_hotel_name"
                            android:layout_width="@dimen/layout_lvl0"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_lvl3"
                            android:textColor="@color/Unify_N700_96"
                            app:layout_constraintEnd_toStartOf="@+id/hotel_share_button"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typographyType="heading_2"
                            tools:text="Avissa Suites" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/hotel_share_button"
                            android:layout_width="@dimen/layout_lvl3"
                            android:layout_height="@dimen/layout_lvl3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_hotel_share" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/hotel_rating_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_lvl2"
                        android:layout_marginTop="@dimen/layout_lvl1"
                        android:layout_marginRight="@dimen/layout_lvl2"
                        android:layout_marginBottom="@dimen/hotel_12dp"
                        android:orientation="horizontal">

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/hotel_property_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_lvl2"
                            android:layout_marginRight="@dimen/spacing_lvl2"
                            android:background="@drawable/bg_search_destination_tag"
                            android:paddingLeft="@dimen/hotel_6dp"
                            android:paddingTop="@dimen/spacing_lvl1"
                            android:paddingRight="@dimen/hotel_6dp"
                            android:paddingBottom="@dimen/spacing_lvl1"
                            android:textColor="@color/Unify_N200"
                            app:typographyType="body_3"
                            app:typographyWeight="bold"
                            tools:text="Hotel" />

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/hotel_safety_information_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_lvl4"
                        android:layout_marginRight="@dimen/spacing_lvl4"
                        android:layout_marginBottom="@dimen/hotel_12dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_hotel_safety_badge_icon"
                            android:layout_width="@dimen/layout_lvl2"
                            android:layout_height="@dimen/layout_lvl2"
                            android:scaleType="fitCenter"
                            app:layout_constraintBottom_toBottomOf="@id/tv_hotel_safety_information_title"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_hotel_safety_information_title"
                            tools:background="@color/Unify_B500" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tv_hotel_safety_information_title"
                            android:layout_width="@dimen/layout_lvl0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_lvl2"
                            android:textColor="@color/Unify_B500"
                            app:layout_constraintLeft_toRightOf="@+id/iv_hotel_safety_badge_icon"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typographyType="body_3"
                            app:typographyWeight="bold"
                            tools:text="Hygine Verified" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tv_hotel_safety_information_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl2"
                            android:textColor="@color/Unify_N700_68"
                            app:layout_constraintTop_toBottomOf="@+id/tv_hotel_safety_information_title"
                            app:typographyType="body_3"
                            tools:text="Akomodasi ini telah menerapkan standar protokol kesehatan." />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/top_divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hotel_1dp"
                        android:layout_marginTop="@dimen/spacing_lvl2"
                        android:background="@color/Unify_N50" />

                    <LinearLayout
                        android:id="@+id/container_hotel_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_lvl2"
                            android:layout_marginTop="@dimen/layout_lvl2"
                            android:layout_marginRight="@dimen/layout_lvl2">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_booking_logo"
                                android:layout_width="@dimen/hotel_20dp"
                                android:layout_height="@dimen/hotel_20dp"
                                android:layout_alignTop="@+id/tv_hotel_rating_number"
                                android:layout_alignBottom="@+id/tv_hotel_rating_number"
                                android:layout_marginEnd="@dimen/spacing_lvl2"
                                android:layout_marginRight="@dimen/spacing_lvl2"
                                app:srcCompat="@drawable/ic_booking_logo" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_hotel_rating_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/spacing_lvl2"
                                android:layout_marginRight="@dimen/spacing_lvl2"
                                android:layout_toEndOf="@+id/iv_booking_logo"
                                android:layout_toRightOf="@+id/iv_booking_logo"
                                android:textColor="@color/Unify_B600"
                                app:typographyType="heading_4"
                                tools:text="8,6" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_hotel_rating_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/tv_hotel_rating_number"
                                android:layout_alignBottom="@+id/tv_hotel_rating_number"
                                android:layout_marginTop="@dimen/spacing_lvl1"
                                android:layout_toEndOf="@+id/tv_hotel_rating_number"
                                android:layout_toRightOf="@+id/tv_hotel_rating_number"
                                android:gravity="center"
                                android:textColor="@color/Unify_N700_96"
                                app:typographyType="body_3"
                                tools:text="Mengesankan" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_hotel_rating_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_booking_logo"
                                android:layout_marginTop="@dimen/spacing_lvl1"
                                android:textColor="@color/Unify_N700_96"
                                app:typographyType="body_3"
                                tools:text="Berdasarkan 1.000 ulasan" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_hotel_detail_all_reviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:text="@string/hotel_show_all_text"
                                android:textColor="@color/Unify_G500"
                                app:typographyType="body_3" />

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_best_review"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_hotel_review_gradient"
                            android:clipToPadding="false"
                            android:paddingTop="@dimen/layout_lvl1"
                            android:paddingEnd="@dimen/layout_lvl2"
                            android:paddingRight="@dimen/layout_lvl2"
                            android:paddingBottom="@dimen/layout_lvl2" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_hotel_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_lvl2"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/layout_lvl1">

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hotel_address_title"
                            android:textColor="@color/Unify_N700_96"
                            app:typographyType="heading_4" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_lvl1">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_hotel_detail_location"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/hotel_100dp"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:orientation="vertical">

                                <com.tokopedia.unifycomponents.UnifyButton
                                    android:id="@+id/btn_hotel_detail_show"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/layout_lvl1"
                                    android:layout_marginRight="@dimen/layout_lvl1"
                                    android:layout_marginBottom="@dimen/layout_lvl1"
                                    android:paddingLeft="@dimen/layout_lvl2"
                                    android:paddingRight="@dimen/layout_lvl2"
                                    android:text="@string/hotel_show_map_text"
                                    android:textStyle="bold"
                                    app:unifyButtonSize="small"
                                    app:unifyButtonType="main"
                                    app:unifyButtonVariant="ghost" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/hotel_12dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/hotel_icon"
                                android:layout_width="@dimen/layout_lvl3"
                                android:layout_height="@dimen/layout_lvl3"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/layout_lvl1"
                                android:layout_marginRight="@dimen/layout_lvl1"
                                app:srcCompat="@drawable/ic_hotel" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_hotel_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/layout_lvl1"
                                android:layout_toEndOf="@+id/hotel_icon"
                                android:layout_toRightOf="@+id/hotel_icon"
                                android:textColor="@color/Unify_N700_68"
                                app:typographyType="body_3"
                                tools:text="Jalan Cihampelas No 211-217 Bandung 40131, Cihampelas, Bandung, Jawa Barat, Indonesia, 40131" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_facilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_lvl2"
                            android:layout_marginTop="@dimen/layout_lvl2"
                            android:layout_marginRight="@dimen/layout_lvl2"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/layout_lvl1">

                            <com.tokopedia.unifyprinciples.Typography
                                android:layout_width="@dimen/layout_lvl0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hotel_facility_title"
                                android:textColor="@color/Unify_N700_96"
                                app:typographyType="heading_4" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_hotel_detail_all_facilities"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/hotel_show_all_text"
                                android:textColor="@color/Unify_G500"
                                app:typographyType="body_3" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_hotel_facilities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_lvl1"
                            android:clipToPadding="false"
                            android:paddingStart="@dimen/layout_lvl1"
                            android:paddingLeft="@dimen/layout_lvl1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_hotel_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layout_lvl2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_lvl1"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/layout_lvl1">

                            <com.tokopedia.unifyprinciples.Typography
                                android:layout_width="@dimen/layout_lvl0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hotel_policy_title"
                                android:textColor="@color/Unify_N700_96"
                                app:typographyType="heading_4" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_hotel_detail_all_policies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/hotel_show_all_text"
                                android:textColor="@color/Unify_G500"
                                app:typographyType="body_3" />

                        </LinearLayout>

                        <com.tokopedia.hotel.common.presentation.widget.SwitcherCustomView
                            android:id="@+id/scv_hotel_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_lvl1"
                            app:leftSubtitleText="@string/hotel_homepage_check_in"
                            app:rightSubtitleText="@string/hotel_check_out_calendar_title" />

                        <LinearLayout
                            android:id="@+id/container_important_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.tokopedia.unifyprinciples.Typography
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/layout_lvl3"
                                android:text="@string/hotel_important_info_title"
                                android:textColor="@color/Unify_N700_96"
                                app:typographyType="heading_4" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_hotel_important_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/layout_lvl1"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:textColor="@color/Unify_N700_68"
                                app:typographyType="body_3"
                                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_hotel_important_info_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hotel_read_more_title"
                                android:textColor="@color/Unify_G500"
                                app:typographyType="body_3" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/container_hotel_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

