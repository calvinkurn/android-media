            android:elevation="@dimen/spacing_lvl2"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_lvl1"
                android:background="@color/Unify_N50" />

            <com.tokopedia.hotel.globalsearch.presentation.widget.HotelGlobalSearchWidget
                android:id="@+id/widget_hotel_global_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/hotel_1dp"
                android:background="@color/Unify_N50" />

            <LinearLayout
                android:id="@+id/container_room_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
