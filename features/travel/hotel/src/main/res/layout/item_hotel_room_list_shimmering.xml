<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/layout_lvl1"
    app:cardElevation="@dimen/hotel_1dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginLeft="@dimen/layout_lvl2"
    android:layout_marginStart="@dimen/layout_lvl2"
    android:layout_marginRight="@dimen/layout_lvl2"
    android:layout_marginEnd="@dimen/layout_lvl2"
    android:layout_marginTop="@dimen/layout_lvl1"
    android:layout_marginBottom="@dimen/layout_lvl1"
    app:cardBackgroundColor="@color/Unify_N0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hotel_120dp"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            app:width_weight="0.5"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginStart="@dimen/hotel_12dp"
            android:layout_marginLeft="@dimen/hotel_12dp"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            app:corners="4"
            app:width_weight="0.4"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginStart="@dimen/hotel_12dp"
            android:layout_marginLeft="@dimen/hotel_12dp"
            android:layout_marginBottom="@dimen/layout_lvl2"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>