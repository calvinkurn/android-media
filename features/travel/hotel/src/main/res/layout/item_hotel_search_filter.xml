<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_item_filter"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:background="@drawable/bg_hotel_filter"
        android:gravity="center"
        android:padding="@dimen/hotel_12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl1"
            android:layout_marginRight="@dimen/spacing_lvl1"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/hotel_selection_chip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/hotel_sp_6"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_2"
            tools:text="@string/label_filter" />

    </LinearLayout>
</FrameLayout>