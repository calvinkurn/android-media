<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_item_filter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/hotel_12dp"
    android:gravity="center"
    android:background="@drawable/bg_hotel_filter">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl1"
        android:layout_marginRight="@dimen/spacing_lvl1"
        android:visibility="gone"
        tools:visibility="visible"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hotel_selection_chip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        tools:text="@string/label_filter"
        app:typographyType="body_2"
        android:textColor="@color/Neutral_N700_68"/>

</LinearLayout>