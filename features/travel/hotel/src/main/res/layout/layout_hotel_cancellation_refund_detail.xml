<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_lvl3"
    android:paddingBottom="@dimen/layout_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_4"
        tools:text="Detail Refund" />

    <!--    need to adjust margin-->

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/hotel_cancellation_ticker_refund_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        tools:layout_height="@dimen/layout_lvl3" />

    <!--    margin top to be changed to 12dp-->
    <View
        android:id="@+id/hotel_cancellation_refund_price_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        tools:background="@color/Neutral_N700_96"
        tools:layout_height="@dimen/layout_lvl2" />

    <!--    View garisgaris-->

    <View
        android:id="@+id/hotel_cancellation_total_price_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        tools:background="@color/Neutral_N700_96"
        tools:layout_height="@dimen/layout_lvl2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hotel_cancellation_refund_additional_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl1"
        android:textColor="@color/Neutral_N700_68"
        app:typographyType="body_3"
        tools:text="Refund tidak tersedia untuk pesanan ini" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/hotel_cancellation_button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_lvl2"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        tools:text="Lanjutkan" />

</LinearLayout>