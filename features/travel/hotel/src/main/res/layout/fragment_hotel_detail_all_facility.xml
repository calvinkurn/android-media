<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        style="?tabTheme"
        footerColor="@color/Unify_G500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:elevation="@dimen/spacing_lvl1"
        app:tabIndicatorColor="@color/Unify_G400"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/Unify_G500"
        app:tabTextAppearance="@style/TitlePageWhiteIndicator.Hotel"
        app:tabTextColor="@color/Unify_N700_32" />

    <com.tokopedia.abstraction.base.view.widget.TouchViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_weight="1"
        android:background="@color/Unify_N0" />

</LinearLayout>