<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spacing_lvl1">

    <ImageView
        android:id="@+id/facility_icon"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"
        app:srcCompat="@drawable/ic_facility_add" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/facility_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:lines="1"
        app:typographyType="body_3"
        android:textColor="@color/Neutral_N700_68"
        tools:text="Sarapan Gratis" />
</LinearLayout>