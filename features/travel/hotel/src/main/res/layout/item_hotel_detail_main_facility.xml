<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/hotel_72dp"
    android:layout_height="@dimen/hotel_72dp"
    android:layout_marginLeft="@dimen/layout_lvl1"
    android:layout_marginRight="@dimen/layout_lvl1"
    android:background="@drawable/bg_hotel_facility_item"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layout_lvl1">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_main_facility_icon"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_gravity="center_horizontal"
        tools:src="@drawable/status_no_result" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_main_facility_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="small"
        tools:text="Wi-Fi Hotel Kencang" />

</LinearLayout>