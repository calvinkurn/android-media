<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:orientation="vertical"
    android:padding="@dimen/layout_lvl2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/hotel_12dp"
            android:layout_marginRight="@dimen/hotel_12dp"
            app:srcCompat="@drawable/ic_hotel_calendar" />

        <LinearLayout
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/hotel_3dp"
                android:layout_marginLeft="@dimen/hotel_3dp"
                android:text="@string/hotel_homepage_check_in"
                app:typographyType="body_3"
                android:textColor="@color/Unify_N700_44"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tv_hotel_homepage_checkin_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:inputType="textNoSuggestions"
                tools:text="18 Des 2018" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl1"
            android:background="@drawable/hotel_bg_round_grey"
            android:gravity="center"
            android:paddingLeft="@dimen/hotel_6dp"
            android:paddingTop="@dimen/spacing_lvl1"
            android:paddingRight="@dimen/hotel_6dp"
            android:paddingBottom="@dimen/spacing_lvl1">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_hotel_homepage_night_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:drawableRightCompat="@drawable/ic_hotel_night"
                app:typographyType="body_3"
                tools:text="10" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/hotel_3dp"
                android:layout_marginLeft="@dimen/hotel_3dp"
                android:text="@string/hotel_homepage_check_out"
                app:typographyType="body_3"
                android:textColor="@color/Unify_N700_44"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tv_hotel_homepage_checkout_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:inputType="textNoSuggestions"
                tools:text="28 Des 2018" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/hotel_10dp"
            android:layout_marginRight="@dimen/hotel_10dp"
            app:srcCompat="@drawable/ic_hotel_guest_room" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/hotel_3dp"
                android:layout_marginLeft="@dimen/hotel_3dp"
                android:text="@string/hotel_homepage_guest_info"
                app:typographyType="body_3"
                android:textColor="@color/Unify_N700_44"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tv_hotel_homepage_guest_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:inputType="textNoSuggestions"
                tools:text="1 kamar, 1 dewasa, 1 anak" />

        </LinearLayout>
    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_hotel_homepage_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl4"
        android:text="@string/hotel_global_search_check_availability"
        app:unifyButtonType="main"
        app:unifyButtonSize="large"/>

</LinearLayout>