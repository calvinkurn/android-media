<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/hotel_cancellation_refund_connecting_line"
        android:layout_width="@dimen/spacing_lvl1"
        android:layout_height="@dimen/layout_lvl0"
        android:background="@color/ticket_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/hotel_cancellation_policy_item_icon_normal"
        app:layout_constraintLeft_toLeftOf="@+id/hotel_cancellation_policy_item_icon_normal"
        app:layout_constraintRight_toRightOf="@+id/hotel_cancellation_policy_item_icon_normal"
        app:layout_constraintStart_toStartOf="@+id/hotel_cancellation_policy_item_icon_normal"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hotel_cancellation_policy_item_icon_normal"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:background="@drawable/ic_hotel_shape_oval"
        app:backgroundTint="@color/Green_G500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_hotel_white_tick"
        android:padding="@dimen/spacing_lvl2"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hotel_cancellation_policy_item_icon_deactivate"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:background="@drawable/ic_hotel_shape_oval"
        app:backgroundTint="@color/Neutral_N100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_hotel_white_tick"
        android:padding="@dimen/spacing_lvl2"/>

    <LinearLayout
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/hotel_cancellation_policy_item_icon_normal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hotel_cancellation_policy_item_icon_normal"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/hotel_cancellation_policy_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="heading_5"
            tools:text="Biaya pembatalan Rp400.000"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/hotel_cancellation_policy_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl2"
            android:textColor="@color/Neutral_N700_68"
            app:typographyType="body_3"
            tools:text="Untuk pengajuan pembatalan silahkan mengajukan sebelum tanggal blablablabla" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>