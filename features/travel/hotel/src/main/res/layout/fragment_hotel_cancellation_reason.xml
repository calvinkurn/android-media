<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Unify_N0"
    android:orientation="vertical">
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hotel_cancellation_reason_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hotel_cancellation_sticky_container"/>

    <LinearLayout
        android:id="@+id/hotel_cancellation_sticky_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/hotel_cancellation_button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:text="@string/hotel_cancellation_button_submit"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            tools:text="Lanjutkan"
            android:layout_alignParentBottom="true"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/hotel_cancellation_page_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl2"
            android:gravity="center"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            tools:text="alawlkndjanfjenfjrbhfbrhgbhgb" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>