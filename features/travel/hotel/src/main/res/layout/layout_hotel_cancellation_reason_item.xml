<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingLeft="@dimen/layout_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hotel_cancellation_reason_hotel_description"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toStartOf="@+id/hotel_cancellation_reason_radio_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="lalallalala" />

    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
        android:id="@+id/hotel_cancellation_reason_radio_button"
        android:layout_width="@dimen/spacing_lvl5"
        android:layout_height="@dimen/spacing_lvl5"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="@+id/hotel_cancellation_reason_hotel_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hotel_cancellation_reason_hotel_description" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/hotel_cancellation_reason_free_text_tf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/hotel_cancellation_seperator"
        app:layout_constraintTop_toBottomOf="@+id/hotel_cancellation_reason_hotel_description"
        app:text_field_input_type="text"
        app:text_field_label="@string/hotel_cancellation_reason_free_text_label"
        app:text_field_label_static="true"
        app:text_field_placeholder="@string/hotel_cancellation_reason_free_text_placeholder"
        tools:layout_height="@dimen/layout_lvl2"
        tools:visibility="visible"
        app:text_field_counter="500"
        />

    <View
        android:id="@+id/hotel_cancellation_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Neutral_N75"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>