<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    android:orientation="vertical">

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/rv_hotel_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_submit_button"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/layout_lvl7"
        android:clipToPadding="false"/>

    <FrameLayout
        android:id="@+id/layout_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/Unify_N0">
        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/hotel_filter_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hotel_button_save"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
