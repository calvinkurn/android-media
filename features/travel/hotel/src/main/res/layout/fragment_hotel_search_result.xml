<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/hotelSearchResultTicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tickerShapeType="full"
                tools:visibility="visible" />

            <include
                android:id="@+id/shimmer_quick_filter_sort_filter"
                layout="@layout/layout_quick_filter_shimmering" />

            <com.tokopedia.sortfilter.SortFilter
                android:id="@+id/quick_filter_sort_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                app:sort_filter_relationship="AND"
                app:sort_filter_type="quick"
                android:visibility="gone"
                android:paddingStart="@dimen/spacing_lvl4"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingBottom="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl3"/>

            <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="@dimen/hotel_12dp"
                android:paddingBottom="@dimen/hotel_12dp"
                android:scrollbars="vertical" />
        </LinearLayout>
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</androidx.coordinatorlayout.widget.CoordinatorLayout>