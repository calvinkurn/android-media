<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/layout_lvl1">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hotel_cancellation_refund_detail_payment_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        tools:text="Biaya Pembatalan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/hotel_cancellation_refund_detail_payment_price"
        app:layout_constraintEnd_toStartOf="@+id/hotel_cancellation_refund_detail_payment_price"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N700_68"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/hotel_cancellation_refund_detail_payment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Gratis"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>