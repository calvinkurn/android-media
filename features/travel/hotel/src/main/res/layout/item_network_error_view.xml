<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/Unify_N0"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/hotel_10dp">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/hotel_5dp"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/unify_globalerrors_connection"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_retry"
        android:layout_margin="@dimen/hotel_5dp"
        android:gravity="center"
        android:text="@string/msg_network_error_1"
        app:typographyType="heading_4"
        android:textColor="@color/Unify_N700_96"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sub_message_retry"
        android:layout_margin="@dimen/hotel_5dp"
        android:gravity="center"
        android:text="@string/msg_network_error_2"
        android:textColor="@color/Unify_N150"
        app:typographyType="body_3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_retry"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:text="@string/title_try_again"/>

</LinearLayout>
