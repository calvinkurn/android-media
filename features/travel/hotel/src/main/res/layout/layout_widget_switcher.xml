<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_hotel_facility_item"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_lvl2"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_switcher_left_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3"
                tools:text="Check-in" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_switcher_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Mulai 11:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_lvl2"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_switcher_right_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_68"
                app:fontSize="micro"
                app:typographyType="body_3"
                tools:text="Check-out" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_switcher_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Sampai 21:00" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/layout_lvl0"
        android:background="@color/Unify_N100"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
