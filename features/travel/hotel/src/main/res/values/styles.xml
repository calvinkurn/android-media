<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.White.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.White.Hotel">
        <item name="titleTextAppearance">@style/HotelTitleTextAppearance</item>
    </style>

    <style name="HotelTitleTextAppearance" parent="TitleTextAppearance.White">
        <item name="android:textColor">@color/Unify_N700_96</item>
    </style>

    <style name="TitlePageWhiteIndicator.Hotel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorTextAppearance">
        <item name="android:textColor">@color/Unify_R500</item>
    </style>

    <style name="HelperTextAppearance">
        <item name="android:textColor">@color/Unify_N700</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TextInputLayouts">
        <item name="colorControlNormal">@color/Unify_N700_96 </item>
        <item name="colorControlActivated">@color/Unify_G500</item>
    </style>

    <style name="TextInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">1sp</item>
    </style>


    <style name="hotelPdpCollapsingToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/Unify_N700_96</item>
    </style>

    <style name="hotelPdpExpandedToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>
</resources>