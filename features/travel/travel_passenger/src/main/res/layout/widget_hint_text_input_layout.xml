<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:focusable="true"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_2"
        tools:text="Label" />

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:layout_marginBottom="-6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_2"
                tools:text="HelperText" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_2"
                tools:text="ErrorText" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_2"
                tools:text="Toped Sukses" />
        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:paddingLeft="@dimen/spacing_lvl1"
            android:paddingRight="@dimen/spacing_lvl1"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_2"
            tools:text="2/20" />
    </LinearLayout>

</LinearLayout>