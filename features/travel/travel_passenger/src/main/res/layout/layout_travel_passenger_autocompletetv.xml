<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Unify_N0">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Content"
        android:padding="@dimen/spacing_lvl4"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N700_96"
        />

    <View
        android:id="@+id/transaction_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_N100"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"/>
</LinearLayout>