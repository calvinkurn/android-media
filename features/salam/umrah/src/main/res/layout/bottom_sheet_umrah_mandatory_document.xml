<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_checkout_mandatory_document">
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_mandatory_document_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Neutral_N700"
        android:text="@string/umrah_checkout_mandatory_document_bottom_sheet_desc" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/tg_umrah_checkout_mandatory_document_desc"
        android:id="@+id/rv_umrah_checkout_mandatory_document"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>