<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/dp_8"
    android:id="@+id/root_view_umrah_dream_fund"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/iv_umrah_salam"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_48"
            app:use_gradient="true"
            android:background="@drawable/umrah_bg_homepage_gray_rounded"
          />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tg_umrah_dream_fund_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@+id/iv_umrah_salam"
            android:layout_marginStart="89dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/Neutral_N700_96"
            android:layout_marginLeft="89dp"
            app:use_gradient="true"
            android:background="@drawable/umrah_bg_homepage_gray_rounded"
            />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tg_umrah_tabung_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/g_500"
            app:layout_constraintRight_toRightOf="@+id/iv_umrah_salam"
            app:layout_constraintStart_toStartOf="@+id/iv_umrah_salam"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_dream_fund_title"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="@dimen/dp_16"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            app:use_gradient="true"
            android:background="@drawable/umrah_bg_homepage_gray_rounded"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
