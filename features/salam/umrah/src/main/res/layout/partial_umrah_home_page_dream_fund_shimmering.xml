<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/root_view_umrah_dream_fund"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/iv_umrah_salam"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_48"
          />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tg_umrah_dream_fund_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="89dp"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/Neutral_N700_96"
            android:layout_marginLeft="89dp" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tg_umrah_tabung_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/g_500"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_dream_fund_title"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_dream_fund_title"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>
