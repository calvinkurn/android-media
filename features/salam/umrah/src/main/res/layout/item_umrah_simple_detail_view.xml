<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_umrah_detail_icon"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_loading_toped_new" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lineHeight="@dimen/dp_18"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintLeft_toRightOf="@+id/iv_umrah_detail_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="Tanggal Transaksi" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lineHeight="@dimen/dp_18"
        android:textColor="@color/Neutral_N700_44"
        app:layout_constraintLeft_toRightOf="@+id/iv_umrah_detail_icon"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_title"
        app:typographyType="small"
        tools:text="7 Aug 2019 17:22 WIB" />

</android.support.constraint.ConstraintLayout>