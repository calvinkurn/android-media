<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/umrah_pdp_swipe_to_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_umrah_pdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/umrah_pdp_app_bar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.AppCompat.Light">


                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/umrah_pdp_collapsing_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:contentScrim="@color/Neutral_N0"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/room_detail_toolbar_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/Neutral_N0"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            app:layout_collapseMode="parallax"
                            app:layout_collapseParallaxMultiplier="0.6">

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/vp_umrah_pdp_images_top"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_dp_200"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tl_umrah_pdp_images_indicator"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/spacing_lvl3"
                                android:layout_marginBottom="@dimen/spacing_lvl4"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:tabBackground="@drawable/umrah_ic_pdp_images_indicator"
                                app:tabGravity="center"
                                app:tabIndicator="@null"
                                app:tabPaddingEnd="@dimen/spacing_lvl3"
                                app:tabPaddingStart="@dimen/spacing_lvl3" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/umrah_pdp_toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:elevation="@dimen/spacing_lvl2"
                            android:gravity="top"
                            app:contentInsetLeft="@dimen/unify_space_0"
                            app:contentInsetStart="@dimen/unify_space_0"
                            app:contentInsetStartWithNavigation="@dimen/unify_space_0"
                            app:elevation="@dimen/spacing_lvl2"
                            app:layout_collapseMode="pin"
                            app:subtitleTextAppearance="@style/TitleTextAppearance.White"
                            app:titleTextAppearance="@style/SubTitleTextAppearance"
                            tools:targetApi="lollipop" />

                    </com.google.android.material.appbar.CollapsingToolbarLayout>
                </com.google.android.material.appbar.AppBarLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingBottom="@dimen/layout_lvl7">

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_lvl4"
                            android:layout_marginLeft="@dimen/spacing_lvl4"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:textColor="@color/Neutral_N700_96"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:typographyType="heading_4"
                            app:typographyWeight="bold"
                            tools:text="Umrah Praktis Barokah" />

                        <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
                            android:id="@+id/iw_umrah_pdp_travel_agent"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl2"
                            app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_title"
                            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_title" />

                        <View
                            android:id="@+id/v_umrah_pdp_separator"
                            android:layout_width="@dimen/unify_space_0"
                            android:layout_height="@dimen/spacing_lvl1"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:background="@color/Neutral_N75"
                            app:layout_constraintLeft_toLeftOf="@+id/iw_umrah_pdp_travel_agent"
                            app:layout_constraintTop_toBottomOf="@+id/iw_umrah_pdp_travel_agent" />

                        <com.tokopedia.salam.umrah.common.presentation.widget.UmrahTravelAgentWidget
                            android:id="@+id/uta_umrah_pdp_travel_agent"
                            android:layout_width="@dimen/unify_space_0"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="@+id/v_umrah_pdp_separator"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/v_umrah_pdp_separator"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:layout_marginEnd="@dimen/spacing_lvl4"
                            android:layout_marginRight="@dimen/spacing_lvl4"
                            />

                        <com.tokopedia.salam.umrah.pdp.presentation.widget.UmrahPdpGreenRectWidget
                            android:id="@+id/grw_umrah_pdp_hotel_type"
                            android:layout_width="@dimen/unify_space_0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:layout_marginEnd="@dimen/spacing_lvl4"
                            android:layout_marginRight="@dimen/spacing_lvl4"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            app:layout_constraintLeft_toLeftOf="@+id/uta_umrah_pdp_travel_agent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/uta_umrah_pdp_travel_agent" />

                        <include
                            android:layout_width="@dimen/unify_space_0"
                            android:layout_height="wrap_content"
                            android:id="@+id/partial_umrah_verified_ad"
                            layout="@layout/partial_umrah_verified_ad"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="@+id/grw_umrah_pdp_hotel_type"
                            app:layout_constraintTop_toBottomOf="@+id/grw_umrah_pdp_hotel_type"
                            />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_information_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl5"
                            android:text="@string/umrah_pdp_title_information"
                            android:textColor="@color/Neutral_N700_96"
                            app:layout_constraintLeft_toLeftOf="@+id/partial_umrah_verified_ad"
                            app:layout_constraintTop_toBottomOf="@+id/partial_umrah_verified_ad"
                            app:typographyType="heading_3"
                            app:typographyWeight="bold" />

                        <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
                            android:id="@+id/iw_umrah_pdp_calendar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_information_title"
                            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_information_title" />

                        <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
                            android:id="@+id/iw_umrah_pdp_hotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="@+id/iw_umrah_pdp_calendar"
                            app:layout_constraintTop_toBottomOf="@+id/iw_umrah_pdp_calendar" />

                        <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
                            android:id="@+id/iw_umrah_pdp_plane"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="@+id/iw_umrah_pdp_hotel"
                            app:layout_constraintTop_toBottomOf="@+id/iw_umrah_pdp_hotel" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_accommodation_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl5"
                            android:text="@string/umrah_pdp_accommodation_title"
                            android:textColor="@color/Neutral_N700_96"
                            app:layout_constraintLeft_toLeftOf="@+id/iw_umrah_pdp_plane"
                            app:layout_constraintTop_toBottomOf="@+id/iw_umrah_pdp_plane"
                            app:typographyType="heading_3"
                            app:typographyWeight="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_umrah_pdp_accommodation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_accommodation_title" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_airline_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:text="@string/umrah_pdp_airline_title"
                            android:textColor="@color/Neutral_N700_96"
                            app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_accommodation_title"
                            app:layout_constraintTop_toBottomOf="@+id/rv_umrah_pdp_accommodation"
                            app:typographyType="heading_3"
                            app:typographyWeight="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_umrah_pdp_airline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:clipToPadding="false"
                            android:paddingLeft="@dimen/spacing_lvl4"
                            android:paddingRight="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_airline_title" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_itinerary_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:text="@string/umrah_pdp_itinerary_title"
                            android:textColor="@color/Neutral_N700_96"
                            app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_airline_title"
                            app:layout_constraintTop_toBottomOf="@+id/rv_umrah_pdp_airline"
                            app:typographyType="heading_3"
                            app:typographyWeight="bold" />

                        <com.tokopedia.salam.umrah.pdp.presentation.widget.UmrahPdpItineraryWidget
                            android:id="@+id/iw_umrah_pdp_itineraries"
                            android:layout_width="@dimen/unify_space_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_lvl4"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:layout_marginRight="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_itinerary_title" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_featured_facilities_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl5"
                            android:text="@string/umrah_pdp_facilities_title"
                            android:textColor="@color/Neutral_N700_96"
                            app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_itinerary_title"
                            app:layout_constraintTop_toBottomOf="@+id/iw_umrah_pdp_itineraries"
                            app:typographyType="heading_3"
                            app:typographyWeight="bold" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_featured_facilities_see_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_lvl4"
                            android:layout_marginRight="@dimen/spacing_lvl4"
                            android:text="@string/umrah_see_all"
                            android:textColor="@color/Green_G500"
                            app:layout_constraintBottom_toBottomOf="@+id/tg_umrah_pdp_featured_facilities_title"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tg_umrah_pdp_featured_facilities_title"
                            app:typographyType="body_3"
                            app:typographyWeight="reguler" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_umrah_pdp_facilities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:clipToPadding="false"
                            android:paddingLeft="@dimen/spacing_lvl4"
                            android:paddingRight="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_featured_facilities_title" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_non_facilities_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl5"
                            android:text="@string/umrah_pdp_non_facilities_title"
                            android:textColor="@color/Neutral_N700_96"
                            app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_itinerary_title"
                            app:layout_constraintTop_toBottomOf="@+id/rv_umrah_pdp_facilities"
                            app:typographyType="heading_3"
                            app:typographyWeight="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_umrah_pdp_non_facilities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_lvl4"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:layout_marginRight="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_non_facilities_title" />

                        <com.tokopedia.unifycomponents.ticker.Ticker
                            android:id="@+id/ticker_umrah_pdp_additional_info"
                            android:layout_width="@dimen/unify_space_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_lvl4"
                            android:layout_marginTop="@dimen/spacing_lvl5"
                            android:layout_marginRight="@dimen/spacing_lvl4"
                            app:closeButtonVisibility="gone"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rv_umrah_pdp_non_facilities"
                            app:tickerShapeType="loose" />

                        <com.tokopedia.unifycomponents.DividerUnify
                            android:id="@+id/du_umrah_pdp_divider"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_lvl3"
                            android:layout_marginTop="@dimen/spacing_lvl5"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ticker_umrah_pdp_additional_info" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_faq_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl5"
                            android:text="@string/umrah_pdp_faq_title"
                            android:textColor="@color/Neutral_N700_96"
                            app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_itinerary_title"
                            app:layout_constraintTop_toBottomOf="@+id/du_umrah_pdp_divider"
                            app:typographyType="heading_3"
                            app:typographyWeight="bold" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tg_umrah_pdp_faq_see_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_lvl4"
                            android:layout_marginRight="@dimen/spacing_lvl4"
                            android:text="@string/umrah_see_all"
                            android:textColor="@color/Green_G500"
                            app:layout_constraintBottom_toBottomOf="@+id/tg_umrah_pdp_faq_title"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tg_umrah_pdp_faq_title"
                            app:typographyType="body_3"
                            app:typographyWeight="reguler" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_umrah_pdp_faqs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            android:clipToPadding="false"
                            android:paddingLeft="@dimen/spacing_lvl4"
                            android:paddingRight="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_faq_title" />

                        <com.tokopedia.unifycomponents.DividerUnify
                            android:id="@+id/du_umrah_pdp_divider_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spacing_lvl3"
                            android:layout_marginTop="@dimen/spacing_lvl4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rv_umrah_pdp_faqs" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_umrah_pdp_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/umrah_bg_search_filter_save_button"
                android:elevation="@dimen/spacing_lvl2"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingTop="@dimen/spacing_lvl3"
                android:paddingRight="@dimen/spacing_lvl4"
                android:paddingBottom="@dimen/spacing_lvl3"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:targetApi="lollipop">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tg_umrah_pdp_empty_price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/umrah_pdp_empty_package_label"
                    android:textColor="@color/Neutral_N700_44"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/bt_umrah_pdp_buy_package"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bt_umrah_pdp_buy_package"
                    app:typographyType="body_1"
                    app:typographyWeight="reguler" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tg_umrah_pdp_price_start_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/umrah_home_page_start_from"
                    android:textColor="@color/Neutral_N700_44"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typographyType="small"
                    app:typographyWeight="reguler" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tg_umrah_pdp_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Yellow_Y500"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_price_start_from"
                    app:typographyType="body_2"
                    app:typographyWeight="bold"
                    tools:text="Rp22.500.000" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tg_umrah_pdp_include_visa_and_equipments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/umrah_include_visa_and_equipments"
                    android:textColor="@color/Green_G500"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_price"
                    app:typographyType="small"
                    app:typographyWeight="reguler" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/bt_umrah_pdp_buy_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:text="@string/umrah_pdp_buy_packet_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:unifyButtonSize="medium"
                    app:unifyButtonType="transaction"
                    app:unifyButtonVariant="filled"
                    tools:ignore="UnusedAttribute"
                    tools:targetApi="m" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_umrah_pdp_message"
                android:layout_width="@dimen/spacing_lvl8"
                android:layout_height="@dimen/spacing_lvl8"
                android:layout_gravity="bottom|right"
                android:backgroundTint="@color/Green_G500"
                android:layout_marginBottom="@dimen/layout_lvl9"
                android:layout_marginRight="@dimen/spacing_lvl3"
                app:srcCompat="@drawable/ic_umrah_message"
                app:backgroundTint="@color/Green_G500"
                app:fabCustomSize="@dimen/spacing_lvl8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/container_umrah_pdp_bottom"
