<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_12"
    android:paddingRight="@dimen/dp_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_pilgrims_contact_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/umrah_checkout_pilgrims_title_label"
        android:layout_marginTop="@dimen/dp_24"
        app:typographyType="body_3"
        />
    <Spinner
        android:id="@+id/sp_umrah_checkout__pilgrims_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_checkout_pilgrims_contact_title_label"
        android:entries="@array/umrah_checkout_pilgrims_titles"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        />

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/til_umrah_checkout_pilgrims_contact_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_umrah_checkout__pilgrims_title_label"
        >

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/ac_umrah_checkout_pilgrims_contact_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/umrah_checkout_bottom_sheet_pilgrims_label_name_first_label" />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/til_umrah_checkout_pilgrims_contact_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintTop_toBottomOf="@+id/til_umrah_checkout_pilgrims_contact_first_name"
        >

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/ac_umrah_checkout_pilgrims_contact_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/umrah_checkout_bottom_sheet_pilgrims_label_name_last_label" />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_pilgrims_contact_date_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_umrah_checkout_pilgrims_contact_last_name"
        android:text="@string/umrah_checkout_bottom_sheet_pilgrims_label_date_birth"
        android:paddingTop="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        app:typographyType="body_3"
        />
    <com.tokopedia.design.component.EditTextCompat
        android:id="@+id/et_umrah_checkout_pilgrims_date_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:editable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_checkout_pilgrims_contact_date_birth"
        android:hint="@string/umrah_checkout_bottom_sheet_pilgrims_label_date_birth"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_marginTop="@dimen/dp_18"
        android:id="@+id/btn_umrah_checkout_pilgrims"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_umrah_checkout_pilgrims_date_birth"
        android:text="@string/umrah_checkout_bottom_sheet_button"
        />


</androidx.constraintlayout.widget.ConstraintLayout>