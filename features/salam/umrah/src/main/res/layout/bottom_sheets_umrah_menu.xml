<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:paddingTop="@dimen/spacing_lvl4"
        android:id="@+id/tg_umrah_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_lvl4"
        android:text="@string/umrah_share"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <View
        android:id="@+id/v_first_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_1"
        android:background="@drawable/bg_line_separator" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl4"
        android:text="@string/umrah_help"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <View
        android:id="@+id/v_second_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_1"
        android:background="@drawable/bg_line_separator" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_salam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl4"
        android:text="@string/umrah_salam"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold"/>

    <View
        android:id="@+id/v_third_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_1"
        android:background="@drawable/bg_line_separator"
        android:layout_marginBottom="@dimen/spacing_lvl5"/>
</LinearLayout>