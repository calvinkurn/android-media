<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_widget_umrah_pdp_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="@dimen/dp_32"
        tools:layout_width="@dimen/dp_32"
        tools:src="@color/light_blue_300" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/iv_widget_umrah_pdp_item_loader"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_pdp_item_title_loader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_widget_umrah_pdp_item_loader"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_pdp_item_desc_loader"
        app:layout_constraintTop_toBottomOf="@id/tg_widget_umrah_pdp_item_title_loader"
        app:layout_constraintLeft_toLeftOf="@id/tg_widget_umrah_pdp_item_title_loader"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_2"/>
</androidx.constraintlayout.widget.ConstraintLayout>