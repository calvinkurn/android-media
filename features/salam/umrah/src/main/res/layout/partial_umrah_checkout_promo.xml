    android:orientation="vertical"
    android:background="@color/Neutral_N0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_announc_umroh_checkout_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:closeButtonVisibility="gone"
        app:tickerShapeType="full"
        app:tickerType="announcement"
        android:visibility="gone"
        />

    <com.tokopedia.promocheckout.common.view.widget.TickerPromoStackingCheckoutView
        android:id="@+id/ticker_promo_umrah"
        android:layout_width="match_parent"
