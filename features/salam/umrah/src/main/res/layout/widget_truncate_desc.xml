<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/widget_truncate_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/umrah_travel_info_desc_content"
        app:typographyType="small"
        android:textColor="@color/Neutral_N700"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        />
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_load_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="small"
        android:visibility="gone"
        android:textColor="@color/Green_G500"
        android:text="@string/umrah_travel_read_more"
        android:layout_marginLeft="@dimen/dp_16"
        />


</LinearLayout>