<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_umrah_travel_agent_permission"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_220"
        android:src="@drawable/umrah_img_travel_permission"
        android:layout_margin="@dimen/spacing_lvl4"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/umrah_travel_permission_title"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        android:textColor="@color/Neutral_N700"
        android:gravity="center"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_permission_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Sesuai dengan SK Ditjen Penyelenggaraan Haji dan Umroh nomor 300 tahun 2017. "
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl2"
        />
    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_travel_permission_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unifyButtonSize="large"
        app:unifyButtonType="alternate"
        app:unifyButtonVariant="ghost"
        android:text="@string/umrah_travel_permission_close"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        />
</LinearLayout>