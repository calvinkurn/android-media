<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_umrah_homepage_deals"
    android:layout_width="@dimen/dimen_dp_260"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/spacing_lvl1"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_umrah_homepage_deals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:paddingBottom="@dimen/unify_space_12"
        android:visibility="gone"
        tools:ignore="UnusedAttribute"
        tools:targetApi="m">

        <ImageView
            android:id="@+id/iv_umrah_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unify_space_96"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@color/Blue_B300" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_umrah_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_12"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            app:labelType="general_dark_orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12 Hari" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_provider_logo"
            android:layout_width="@dimen/spacing_lvl8"
            android:layout_height="@dimen/spacing_lvl8"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/unify_space_12"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/dimen_dp_80"
            android:background="@drawable/umrah_bg_homepage_deals_provider_logo_widget"
            android:padding="@dimen/spacing_lvl2"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/Blue_B300" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_title"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_72"
            android:layout_marginLeft="@dimen/dimen_dp_72"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:layout_marginRight="@dimen/unify_space_12"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_umrah_image"
            app:typographyType="heading_6"
            tools:text="Umrah Silver 9 Hari Berangkat 20 November 2019" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_mulai_dari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:textColor="@color/Neutral_N700_44"
            app:layout_constraintStart_toStartOf="@+id/iv_umrah_provider_logo"
            app:layout_constraintTop_toBottomOf="@+id/iv_umrah_provider_logo"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:textColor="@color/Yellow_Y500"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_mulai_dari"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_mulai_dari"
            app:typographyType="heading_5"
            tools:text="Rp22.500.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_pax_all_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:text="@string/umrah_homepage_pax_all_in"
            android:textColor="@color/Neutral_N700_44"
            app:layout_constraintBottom_toBottomOf="@+id/tg_umrah_price"
            app:layout_constraintStart_toEndOf="@+id/tg_umrah_price"
            app:typographyType="small"
            app:typographyWeight="reguler" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_calendar"
            android:layout_width="@dimen/unify_space_12"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_price"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_price"
            app:srcCompat="@drawable/umrah_ic_calendar" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintBottom_toBottomOf="@+id/iv_umrah_calendar"
            app:layout_constraintStart_toEndOf="@+id/iv_umrah_calendar"
            app:layout_constraintTop_toTopOf="@+id/iv_umrah_calendar"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="20 Nov - 29 Nov 2019" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_hotel"
            android:layout_width="@dimen/unify_space_12"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_price"
            app:layout_constraintTop_toBottomOf="@+id/iv_umrah_calendar"
            app:srcCompat="@drawable/umrah_ic_hotel" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintBottom_toBottomOf="@+id/iv_umrah_hotel"
            app:layout_constraintStart_toEndOf="@+id/iv_umrah_hotel"
            app:layout_constraintTop_toTopOf="@+id/iv_umrah_hotel"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Hotel Bintang 4" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_plane"
            android:layout_width="@dimen/unify_space_12"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="@+id/iv_umrah_hotel"
            app:layout_constraintTop_toBottomOf="@+id/iv_umrah_hotel"
            app:srcCompat="@drawable/umrah_ic_plane" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintBottom_toBottomOf="@+id/iv_umrah_plane"
            app:layout_constraintStart_toEndOf="@+id/iv_umrah_plane"
            app:layout_constraintTop_toTopOf="@+id/iv_umrah_plane"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Garuda Indonesia" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/container_umrah_homepage_deals_shimmering"
        layout="@layout/widget_umrah_homepage_deals_shimmering"
        android:visibility="visible" />
</androidx.cardview.widget.CardView>