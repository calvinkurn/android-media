<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl1"
    tools:targetApi="m"
    tools:ignore="UnusedAttribute">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/item_tg_umrah_pdp_detail_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="@string/umrah_home_page_search_spinner_price_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/item_tg_umrah_pdp_detail_room_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintLeft_toRightOf="@+id/item_tg_umrah_pdp_detail_room_title"
        app:layout_constraintTop_toTopOf="@+id/item_tg_umrah_pdp_detail_room_title"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="1 kamar dengan 4 kasur" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/item_tg_umrah_pdp_detail_room_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_tg_umrah_pdp_detail_room_title"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Rp19.750.000 Rp.19.500.000" />

    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
        android:id="@+id/item_rbu_umrah_pdp_detail_room"
        android:layout_width="@dimen/spacing_lvl5"
        android:layout_height="@dimen/spacing_lvl5"
        app:layout_constraintBottom_toBottomOf="@+id/item_tg_umrah_pdp_detail_room_price"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_tg_umrah_pdp_detail_room_title" />
</androidx.constraintlayout.widget.ConstraintLayout>