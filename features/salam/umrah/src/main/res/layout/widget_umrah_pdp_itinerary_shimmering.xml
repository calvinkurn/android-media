<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/ic_umrah_pdp_itinerary_bullet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_umrah_pdp_itinerary_title_1_loader"
        app:layout_constraintBottom_toBottomOf="@id/ic_umrah_pdp_itinerary_title_1_loader"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:background="@drawable/umrah_ic_pdp_itinerary_bullet"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/ic_umrah_pdp_itinerary_title_1_loader"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@id/ic_umrah_pdp_itinerary_bullet"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_umrah_pdp_itinerary_line"
        app:layout_constraintLeft_toLeftOf="@id/ic_umrah_pdp_itinerary_bullet"
        app:layout_constraintRight_toRightOf="@id/ic_umrah_pdp_itinerary_bullet"
        app:layout_constraintTop_toTopOf="@id/tg_umrah_pdp_itinerary_desc_1_loader"
        app:layout_constraintBottom_toTopOf="@id/ic_umrah_pdp_itinerary_title_2_loader"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:background="@drawable/umrah_img_pdp_itinerary_line" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_pdp_itinerary_desc_1_loader"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_umrah_pdp_itinerary_title_1_loader"
        app:layout_constraintLeft_toLeftOf="@id/ic_umrah_pdp_itinerary_title_1_loader"
        android:layout_marginTop="@dimen/dp_4" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_pdp_itinerary_desc_2_loader"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_pdp_itinerary_desc_1_loader"
        app:layout_constraintLeft_toLeftOf="@id/ic_umrah_pdp_itinerary_title_1_loader"
        android:layout_marginTop="@dimen/dp_4" />
    <View
        android:id="@+id/ic_umrah_pdp_itinerary_bullet_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_umrah_pdp_itinerary_title_2_loader"
        app:layout_constraintBottom_toBottomOf="@id/ic_umrah_pdp_itinerary_title_2_loader"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:background="@drawable/umrah_ic_pdp_itinerary_bullet"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/ic_umrah_pdp_itinerary_title_2_loader"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@id/ic_umrah_pdp_itinerary_bullet"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_pdp_itinerary_desc_2_loader"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_pdp_itinerary_desc_3_loader"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_umrah_pdp_itinerary_title_2_loader"
        app:layout_constraintLeft_toLeftOf="@id/ic_umrah_pdp_itinerary_title_2_loader"
        android:layout_marginTop="@dimen/dp_4"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_pdp_itinerary_desc_4_loader"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_pdp_itinerary_desc_3_loader"
        app:layout_constraintLeft_toLeftOf="@id/ic_umrah_pdp_itinerary_title_1_loader"
        android:layout_marginTop="@dimen/dp_4" />


</androidx.constraintlayout.widget.ConstraintLayout>