<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
        android:id="@+id/iw_umrah_travel_agent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
         />
    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_umrah_travel_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:unifyButtonSize="small"
        android:layout_marginTop="@dimen/dp_16"
        app:unifyButtonType="alternate"
        android:text="@string/umrah_travel_contact"
        app:unifyButtonVariant="ghost"
        />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_umrah_travel_agent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/Green_G500"
        app:tabMode="fixed"
        app:tabPaddingStart="0dp"
        app:tabTextColor="@color/grey_450"
        app:tabSelectedTextColor="@color/Green_G500"
        app:tabTextAppearance="@style/tabUmrahStyle"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_umrah_travel_agent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_8"/>
</LinearLayout>