<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_12"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_three_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Perjalanan Umroh"
            app:typographyType="heading_5"
            android:textColor="@color/Neutral_N700"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_three_image_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="20 Nov - 29 Nov 2018"
            app:typographyType="body_3"
            android:layout_marginLeft="@dimen/dp_12"
            />
        <LinearLayout
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_weight="1"
                android:id="@+id/iw_umrah_gallery_three_image_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@drawable/umrah_bg_rounded_image"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_weight="1"
                android:id="@+id/iw_umrah_gallery_three_image_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@drawable/umrah_bg_rounded_image"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_weight="1"
                android:id="@+id/iw_umrah_gallery_three_image_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@drawable/umrah_bg_rounded_image"
                />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_three_image_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Alhamdulillah ibadah umroh kami berjalan dengan lancar tanpa halangan berarti."
            app:typographyType="body_3"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>