<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_16"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_three_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/Neutral_N700"
            app:typographyType="heading_5"
            tools:text="Perjalanan Umroh" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_three_image_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            app:typographyType="body_3"
            tools:text="20 Nov - 29 Nov 2018" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iw_umrah_gallery_three_image_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_weight="1"
                android:adjustViewBounds="true" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iw_umrah_gallery_three_image_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_weight="1"
                android:adjustViewBounds="true" />

            <FrameLayout
                android:id="@+id/fr_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iw_umrah_gallery_three_image_third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true" />

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/umrah_bg_rounded_image"
                    android:gravity="center"
                    android:text="+5"
                    android:textColor="@color/white" />
            </FrameLayout>

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_three_image_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            app:typographyType="body_3"
            tools:text="Alhamdulillah ibadah umroh kami berjalan dengan lancar tanpa halangan berarti." />
    </LinearLayout>
</androidx.cardview.widget.CardView>