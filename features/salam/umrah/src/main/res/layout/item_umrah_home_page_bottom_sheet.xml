<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/rl_umrah_home_page_bottom_sheet"
    android:focusable="true">
    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_umrah_home_page_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/umrah_home_page_search_spinner_price_label"
        android:layout_margin="@dimen/dp_16"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold"/>
    
    <RadioButton
        app:layout_constraintTop_toTopOf="@+id/tv_umrah_home_page_bottom_sheet"
        app:layout_constraintBottom_toBottomOf="@+id/tv_umrah_home_page_bottom_sheet"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/radio_umrah_home_page_bottom_sheet"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16" />

</androidx.constraintlayout.widget.ConstraintLayout>