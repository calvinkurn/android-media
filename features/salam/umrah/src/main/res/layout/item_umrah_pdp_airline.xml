<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_umrah_pdp_airline_container"
    android:layout_width="@dimen/dimen_dp_250"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_umrah_pdp_flight_header_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl6"
            android:background="@color/Green_G100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_pdp_flight_header_title"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/Green_G500"
            app:layout_constraintBottom_toBottomOf="@+id/v_umrah_pdp_flight_header_bg"
            app:layout_constraintLeft_toLeftOf="@+id/v_umrah_pdp_flight_header_bg"
            app:layout_constraintRight_toRightOf="@+id/v_umrah_pdp_flight_header_bg"
            app:layout_constraintTop_toTopOf="@+id/v_umrah_pdp_flight_header_bg"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Minggu, 15 Desember 2019" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_pdp_flight_plane_logo"
            android:layout_width="@dimen/spacing_lvl5"
            android:layout_height="@dimen/spacing_lvl5"
            android:layout_marginStart="@dimen/unify_space_12"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_umrah_pdp_flight_header_bg"
            app:srcCompat="@color/light_blue_300" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_pdp_flight_plane_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintBottom_toBottomOf="@+id/iv_umrah_pdp_flight_plane_logo"
            app:layout_constraintLeft_toRightOf="@+id/iv_umrah_pdp_flight_plane_logo"
            app:layout_constraintTop_toTopOf="@+id/iv_umrah_pdp_flight_plane_logo"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Garuda Indonesia" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_pdp_flight_departure"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:maxLines="1"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_umrah_pdp_flight_plane_logo"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Jeddah (JED)" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/v_umrah_pdp_flight_separator_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_lvl1"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="@+id/tg_umrah_pdp_flight_departure"
            app:layout_constraintLeft_toRightOf="@+id/tg_umrah_pdp_flight_departure"
            app:layout_constraintTop_toTopOf="@+id/tg_umrah_pdp_flight_departure"
            app:srcCompat="@drawable/umrah_line_pdp_flight" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/v_umrah_pdp_flight_ic_plane"
            android:layout_width="@dimen/unify_space_12"
            android:layout_height="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toBottomOf="@+id/v_umrah_pdp_flight_separator_left"
            app:layout_constraintLeft_toRightOf="@+id/v_umrah_pdp_flight_separator_left"
            app:layout_constraintRight_toLeftOf="@+id/v_umrah_pdp_flight_separator_right"
            app:layout_constraintTop_toTopOf="@+id/v_umrah_pdp_flight_separator_left"
            app:srcCompat="@drawable/umrah_ic_plane" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/v_umrah_pdp_flight_separator_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_lvl1"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:scaleX="-1"
            app:layout_constraintBottom_toBottomOf="@+id/tg_umrah_pdp_flight_arrival"
            app:layout_constraintRight_toLeftOf="@+id/tg_umrah_pdp_flight_arrival"
            app:layout_constraintTop_toTopOf="@+id/tg_umrah_pdp_flight_arrival"
            app:srcCompat="@drawable/umrah_line_pdp_flight" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_pdp_flight_arrival"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:layout_marginRight="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            android:maxLines="1"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tg_umrah_pdp_flight_departure"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Madinah (MED)" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>