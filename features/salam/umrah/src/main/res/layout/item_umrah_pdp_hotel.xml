<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_umrah_pdp_hotel_images"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/unify_space_96"
        tools:ignore="RtlSymmetry"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_pdp_rv_hotel_name"
        app:layout_constraintLeft_toLeftOf="@+id/rv_umrah_pdp_hotel_images"
        app:layout_constraintTop_toBottomOf="@+id/rv_umrah_pdp_hotel_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyWeight="bold"
        app:typographyType="heading_6"
        android:textColor="@color/Neutral_N700_96"
        tools:text="Ramada Daar Al-Fazin Hotel"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_pdp_hotel_check_in"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_rv_hotel_name"
        app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_rv_hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="small"
        android:textColor="@color/Neutral_N700_68"
        tools:text="Check-in 20-25 Okt 2019"
        android:layout_marginTop="@dimen/spacing_lvl1" />

    <RatingBar
        android:id="@+id/rb_umrah_pdp_hotel_rating"
        style="@style/RatingBar.Small"
        android:scaleX="0.67"
        android:scaleY="0.67"
        android:transformPivotX="@dimen/unify_space_0"
        android:transformPivotY="@dimen/spacing_lvl3"
        app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_hotel_check_in"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_hotel_check_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_pdp_hotel_distance"
        app:layout_constraintTop_toTopOf="@+id/rb_umrah_pdp_hotel_rating"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rb_umrah_pdp_hotel_rating"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="small"
        android:textColor="@color/Neutral_N700_68"
        tools:text="200m ke Masjidil Haram"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl5"
        android:layout_marginEnd="@dimen/spacing_lvl5"
        android:layout_marginStart="@dimen/spacing_lvl4" />
</androidx.constraintlayout.widget.ConstraintLayout>