<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/sv_umrah_search_filter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bt_umrah_search_filter_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_0"
        android:layout_marginBottom="@dimen/spacing_lvl4">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_umrah_search_filter_departure_period"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/umrah_search_filter_departure_period"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginLeft="@dimen/spacing_lvl4" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_umrah_search_filter_departure_period_see_all"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tg_umrah_search_filter_departure_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/umrah_see_all"
                android:textColor="@color/Green_G500"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_umrah_search_filter_departure_period"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tg_umrah_search_filter_departure_period"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:clipToPadding="false"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_umrah_search_filter_departure_city"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_umrah_search_filter_departure_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/umrah_search_filter_departure_city"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:layout_marginTop="@dimen/spacing_lvl5"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginLeft="@dimen/spacing_lvl4"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_umrah_search_filter_departure_city_see_all"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tg_umrah_search_filter_departure_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/umrah_see_all"
                android:textColor="@color/Green_G500"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_umrah_search_filter_departure_city"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tg_umrah_search_filter_departure_city"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:clipToPadding="false"
                android:paddingLeft="@dimen/spacing_lvl4"
                android:paddingRight="@dimen/spacing_lvl4"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_umrah_search_filter_travel_duration"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_umrah_search_filter_departure_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/umrah_search_filter_travel_duration"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:layout_marginTop="@dimen/spacing_lvl5"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginLeft="@dimen/spacing_lvl4" />

            <com.tokopedia.salam.umrah.search.presentation.widget.UmrahSeekbarRangeWidget
                android:id="@+id/sr_umrah_search_filter_travel_duration"
                app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_search_filter_travel_duration"
                app:layout_constraintTop_toBottomOf="@+id/tg_umrah_search_filter_travel_duration"
                app:layout_constraintRight_toRightOf="@+id/tg_umrah_search_filter_departure_city_see_all"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tg_umrah_search_filter_package_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sr_umrah_search_filter_travel_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/umrah_search_filter_package_price"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:layout_marginTop="@dimen/spacing_lvl5"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginLeft="@dimen/spacing_lvl4" />

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow_umrah_search_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tg_umrah_search_filter_package_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:constraint_referenced_ids="tf_umrah_search_filter_min_price,tf_umrah_search_filter_max_price"
                app:flow_wrapMode="aligned"
                app:flow_verticalAlign="center"
                app:flow_horizontalStyle="spread"
                app:flow_horizontalGap="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4"
                android:paddingBottom="@dimen/spacing_lvl4"
                />

            <com.tokopedia.unifycomponents.TextFieldUnify
                app:text_field_label_static="true"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:text_field_label="@string/umrah_search_filter_package_price_minimum"
                app:text_field_input_type="number"
                android:id="@+id/tf_umrah_search_filter_min_price"
                app:layout_constraintHorizontal_weight="1"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                />
            <com.tokopedia.unifycomponents.TextFieldUnify
                app:text_field_label_static="true"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:text_field_label="@string/umrah_search_filter_package_price_maximum"
                app:text_field_input_type="number"
                android:id="@+id/tf_umrah_search_filter_max_price"
                app:layout_constraintHorizontal_weight="1"
                tools:ignore="MissingConstraints"
                android:layout_marginRight="@dimen/spacing_lvl4"
                />

            <com.tokopedia.unifycomponents.RangeSliderUnify
                android:id="@+id/range_umrah_price"
                app:layout_constraintTop_toBottomOf="@+id/flow_umrah_search_filter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:valueFrom="@integer/umrah_value_min_range_slider"
                app:valueTo="@integer/umrah_value_max_range_slider"
                app:initialValue="@integer/umrah_value_min_range_slider"
                app:initialMaxValue="@integer/umrah_value_max_range_slider"
                app:step="@integer/umrah_value_step_range_slider"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintTop_toBottomOf="@+id/sv_umrah_search_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/umrah_bg_search_filter_save_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_0"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/bt_umrah_search_filter_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:text="@string/label_save"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        tools:targetApi="m"
        tools:ignore="UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>