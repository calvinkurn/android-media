<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:text="@string/umrah_order_detail_detail_title"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4" />

    <com.tokopedia.salam.umrah.common.presentation.widget.TicketView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:background="@color/white"
        android:elevation="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_detail_title"
        app:tv_anchor1="@+id/ticket_head"
        app:tv_circleRadius="@dimen/dp_8">

        <LinearLayout
            android:id="@+id/ticket_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avissa Suites"
                android:textColor="@color/Neutral_N700_96"
                app:typographyType="heading_6" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel Berkah"
                android:textColor="@color/Neutral_N700_96"
                app:typographyType="body_3" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ticket_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticket_head"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi Jemaah"
                android:textColor="@color/Neutral_N700_96"
                app:typographyType="body_2" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/divider_status"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@color/grey_250" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tg_booking_code_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kode Booking"
                    android:textColor="@color/Neutral_N700_68"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typographyType="small" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tg_booking_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9AUEVO"
                    android:textColor="@color/Green_G500"
                    app:layout_constraintLeft_toLeftOf="@+id/tg_booking_code_label"
                    app:layout_constraintTop_toBottomOf="@+id/tg_booking_code_label"
                    app:typographyType="heading_6" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/btn_show_detail_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/umrah_order_detail_show_detail"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:unifyButtonSize="small"
                    app:unifyButtonType="main"
                    app:unifyButtonVariant="ghost" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </com.tokopedia.salam.umrah.common.presentation.widget.TicketView>

</android.support.constraint.ConstraintLayout>