<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_summary_pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/spacing_lvl4"
        tools:text="Paket Umrah Premium"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_summary_pay_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tg_umrah_checkout_summary_pay_title"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/spacing_lvl2"
        tools:text="Tipe kamar Quad x1 Jamaah"
        app:typographyType="small" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_summary_pay_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/spacing_lvl4"
        tools:text="Rp27.000.000"
        android:textColor="@color/Neutral_N700"
        app:typographyType="body_3"
        app:typographyWeight="bold" />
</RelativeLayout>