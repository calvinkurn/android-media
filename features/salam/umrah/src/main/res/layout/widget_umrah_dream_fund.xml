<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_umrah_dream_fund"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_widget_umrah_dream_fund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/umrah_bg_dream_fund_widget_png">

        <ImageView
            android:id="@+id/iv_umrah_salam"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_48"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/umrah_img_salam_png"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_dream_fund_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="89dp"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/umrah_homepage_dream_fund_title"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_tabung_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="@string/umrah_homepage_save_now"
            android:textColor="@color/g_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_dream_fund_title"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_dream_fund_title"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />
    </androidx.constraintlayout.widget.ConstraintLayout
>
</androidx.cardview.widget.CardView>
