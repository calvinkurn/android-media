<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_umrah_dream_fund"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/spacing_lvl1"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_widget_umrah_dream_fund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/umrah_bg_dream_fund_widget_png">

        <ImageView
            android:id="@+id/iv_umrah_salam"
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/spacing_lvl8"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/umrah_img_salam_png"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_dream_fund_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_96"
            android:layout_marginLeft="@dimen/unify_space_96"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:layout_marginRight="@dimen/unify_space_12"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/umrah_homepage_dream_fund_title"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_tabung_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/unify_space_12"
            android:text="@string/umrah_homepage_save_now"
            android:textColor="@color/Green_G500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_dream_fund_title"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_dream_fund_title"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />
    </androidx.constraintlayout.widget.ConstraintLayout
        >
</androidx.cardview.widget.CardView>