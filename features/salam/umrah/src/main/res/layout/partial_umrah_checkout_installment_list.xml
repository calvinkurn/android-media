<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dp_18"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_12"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_12"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/umrah_bg_checkout_gray">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_installment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:text="@string/umrah_checkout_summary_installment_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_installment_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3x Cicilan - Rp7.333.333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_checkout_installment_label"
        app:typographyType="body_2"
        android:textColor="@color/Neutral_N700"
        />

    <View
        android:id="@+id/divider_umrah_checkout_installment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_32"
        android:background="@color/Neutral_N100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_checkout_installment_list"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/umrah_ic_home_page_down"
        android:id="@+id/iv_umrah_checkout_installment_arrow_down"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_checkout_installment_label"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_installment_first_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tagihan selanjutnya 25 Agustus 2019"
        app:typographyType="small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_umrah_checkout_installment"
        />



</androidx.constraintlayout.widget.ConstraintLayout>