<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view_umrah_dream_fund"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_umrah_pdp_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_salam"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_48"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/umrah_img_salam_png" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_pdp_ad_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_72"
            android:layout_marginRight="@dimen/dp_72"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/umrah_pdp_ad_title"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintLeft_toRightOf="@+id/iv_umrah_salam"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            app:typographyWeight="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_pdp_ic_add_1"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="@+id/tg_umrah_pdp_ad_title"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_pdp_ad_title"
            app:srcCompat="@drawable/umrah_ic_pdp_add" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="@string/umrah_pdp_ad_guaranteed_security"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintBottom_toBottomOf="@+id/iv_umrah_pdp_ic_add_1"
            app:layout_constraintLeft_toRightOf="@+id/iv_umrah_pdp_ic_add_1"
            app:layout_constraintTop_toTopOf="@+id/iv_umrah_pdp_ic_add_1"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_pdp_ic_add_2"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="@+id/iv_umrah_pdp_ic_add_1"
            app:layout_constraintTop_toBottomOf="@+id/iv_umrah_pdp_ic_add_1"
            app:srcCompat="@drawable/umrah_ic_pdp_add" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="@string/umrah_pdp_ad_certainly_depart"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintBottom_toBottomOf="@+id/iv_umrah_pdp_ic_add_2"
            app:layout_constraintLeft_toRightOf="@+id/iv_umrah_pdp_ic_add_2"
            app:layout_constraintTop_toTopOf="@+id/iv_umrah_pdp_ic_add_2"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_pdp_ic_add_3"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/iv_umrah_pdp_ic_add_2"
            app:layout_constraintTop_toBottomOf="@+id/iv_umrah_pdp_ic_add_2"
            app:srcCompat="@drawable/umrah_ic_pdp_add" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="@string/umrah_pdp_ad_full_refund"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintBottom_toBottomOf="@+id/iv_umrah_pdp_ic_add_3"
            app:layout_constraintLeft_toRightOf="@+id/iv_umrah_pdp_ic_add_3"
            app:layout_constraintTop_toTopOf="@+id/iv_umrah_pdp_ic_add_3"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
