<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_12"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_12">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_status_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineHeight="@dimen/dp_18"
        android:text="@string/umrah_order_detail_status_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_status_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineHeight="@dimen/dp_18"
        android:text="@string/umrah_order_detail_status_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_status_label"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <View
        android:id="@+id/divider_status"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/grey_250"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_status_detail" />
    <LinearLayout
        android:id="@+id/ll_header_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/umrah_bg_order_detail_ticker"
        app:layout_constraintTop_toBottomOf="@+id/divider_status"

        >
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_header_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/umrah_order_detail_ticker_example"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="small"
            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_header_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_header_info" />

    <View
        android:id="@+id/divider_status_detail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/grey_250"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_header_detail" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_invoice_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineHeight="@dimen/dp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_status_detail"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="body_3"
        tools:text="IVR/20170713/XVII/VII/16205811" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_invoice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineHeight="@dimen/dp_18"
        android:text="@string/umrah_order_detail_show_label"
        android:textColor="@color/Green_G500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_status_detail"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>