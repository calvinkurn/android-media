<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/rl_umrah_checkout_installment"
    >
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_umrah_checkout_bottom_sheet_installment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/umrah_home_page_search_spinner_price_label"
        android:layout_margin="@dimen/dp_16"
        android:textColor="@color/Neutral_N700_96"
        android:layout_alignParentLeft="true"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        />

    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
        android:id="@+id/radio_umrah_checkout_bottom_sheet_installment"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_centerVertical="true"
        />

</RelativeLayout>