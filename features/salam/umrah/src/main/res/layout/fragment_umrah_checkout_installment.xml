<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/tv_umrah_checkout_installment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:closeButtonVisibility="gone"
        app:tickerShapeType="loose"
        app:tickerType="announcement" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_umrah_checkout_installment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_umrah_checkout_installment" />

    <LinearLayout
        android:background="@color/Neutral_N0"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.tokopedia.unifycomponents.UnifyButton
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_umrah_checkout_installment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:text="@string/umrah_checkout_installment_button_next"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            tools:targetApi="m"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>
</RelativeLayout>