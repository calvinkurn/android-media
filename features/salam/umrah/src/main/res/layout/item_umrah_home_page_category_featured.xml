<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_umrah_home_page_category_featured_item"
        android:textColor="@color/Neutral_N700_96"
        android:text="@string/umrah_home_page_best_deals_label"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_24"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_umrah_home_page_category_featured_item"
        />

</LinearLayout>