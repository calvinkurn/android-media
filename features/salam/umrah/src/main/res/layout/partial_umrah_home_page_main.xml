<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section_layout"
        android:visibility="gone"
        >
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:id="@+id/iv_umrah_bg_kabbah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/umrah_bg_kabbah" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/spacing_lvl3"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4"
                android:gravity="center"
                android:text="@string/umrah_home_page_bg_label"
                android:textColor="@color/Neutral_N0"
                app:typographyType="heading_1"
                app:typographyWeight="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/margin_top_umrah_search"
                app:cardElevation="@dimen/spacing_lvl1"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/spacing_lvl3"
                android:layout_marginRight="@dimen/spacing_lvl4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/partial_umrah_home_page_search_spinner" />

                    <com.tokopedia.unifycomponents.UnifyButton
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/btn_umrah_home_page_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_lvl4"
                        android:text="@string/umrah_home_page_search_label"
                        app:unifyButtonSize="large"
                        tools:targetApi="m"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </FrameLayout>
    <include android:id="@+id/shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/partial_umrah_home_page_main_shimmering"
        android:visibility="visible"
        />
</FrameLayout>