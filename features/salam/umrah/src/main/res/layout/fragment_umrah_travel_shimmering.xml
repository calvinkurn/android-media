<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
        android:id="@+id/iw_umrah_travel_agent_shimmering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_travel_agent_button_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:background="@drawable/umrah_bg_homepage_gray_rounded"
        android:textColor="@color/Neutral_N700_96"
        app:corners="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iw_umrah_travel_agent_shimmering"
        app:use_gradient="true" />

    <LinearLayout
        android:id="@+id/ll_umrah_travel_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_travel_agent_button_chat">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_weight="1"
            android:background="@drawable/umrah_bg_homepage_gray_rounded"
            android:textColor="@color/Neutral_N700_96"
            app:corners="4"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_weight="1"
            android:background="@drawable/umrah_bg_homepage_gray_rounded"
            android:textColor="@color/Neutral_N700_96"
            app:corners="4"
            app:use_gradient="true" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_weight="1"
            android:background="@drawable/umrah_bg_homepage_gray_rounded"
            android:textColor="@color/Neutral_N700_96"
            app:corners="4"
            app:use_gradient="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_umrah_travel_tab">

        <include layout="@layout/partial_umrah_travel_product_shimmering" />
        <include layout="@layout/partial_umrah_travel_product_shimmering" />
        <include layout="@layout/partial_umrah_travel_product_shimmering" />
        <include layout="@layout/partial_umrah_travel_product_shimmering" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>