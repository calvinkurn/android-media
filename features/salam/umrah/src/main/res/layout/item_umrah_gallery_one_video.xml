<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_umrah_youtube_player"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/unify_space_12"
    android:layout_marginRight="@dimen/spacing_lvl4"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_one_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            android:textColor="@color/Neutral_N700"
            app:typographyType="heading_5"
            tools:text="Perjalanan Umroh" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_one_video_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unify_space_12"
            app:typographyType="body_3"
            tools:text="20 Nov - 29 Nov 2018" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/unify_space_12"
                android:layout_marginTop="@dimen/unify_space_12"
                android:layout_marginRight="@dimen/unify_space_12"
                android:layout_marginBottom="@dimen/unify_space_12"
                app:cardCornerRadius="@dimen/spacing_lvl3"
                app:cardElevation="0dp"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iw_umrah_gallery_video_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/umrah_ic_btn_play" />

        </FrameLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_one_video_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            app:typographyType="body_3"
            tools:text="Alhamdulillah ibadah umroh kami berjalan dengan lancar tanpa halangan berarti." />
    </LinearLayout>
</androidx.cardview.widget.CardView>