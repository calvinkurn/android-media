<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_12"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/iv_umrah_image_loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/iv_umrah_provider_logo_loading"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:padding="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_12" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_title_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@+id/iv_umrah_image_loading"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_72"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_72" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_mulai_dari_loading"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintStart_toStartOf="@+id/iv_umrah_provider_logo_loading"
        app:layout_constraintTop_toBottomOf="@+id/iv_umrah_provider_logo_loading" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_price_loading"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_mulai_dari_loading"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_mulai_dari_loading" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/iv_umrah_calendar_loading"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_16"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_price_loading"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_price_loading" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/iv_umrah_hotel_loading"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_16"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_price_loading"
        app:layout_constraintTop_toBottomOf="@id/iv_umrah_calendar_loading" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/iv_umrah_plane_loading"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_16"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@+id/iv_umrah_hotel_loading"
        app:layout_constraintTop_toBottomOf="@id/iv_umrah_hotel_loading" />
</androidx.constraintlayout.widget.ConstraintLayout>
