<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/iv_widget_umrah_dream_fund_progress_loader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36" />
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_dream_fund_progress_title_loader"
        app:layout_constraintTop_toTopOf="@+id/iv_widget_umrah_dream_fund_progress_loader"
        app:layout_constraintLeft_toRightOf="@+id/iv_widget_umrah_dream_fund_progress_loader"
        android:layout_width="120dp"
        android:layout_height="@dimen/dp_16"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_dream_fund_progress_reach_est_loader"
        app:layout_constraintTop_toBottomOf="@+id/tg_widget_umrah_dream_fund_progress_title_loader"
        app:layout_constraintLeft_toLeftOf="@+id/tg_widget_umrah_dream_fund_progress_title_loader"
        app:typographyWeight="reguler"
        app:typographyType="small"
        android:textColor="@color/Neutral_N700_68"
        android:layout_width="@dimen/dp_128"
        android:layout_height="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_4"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/pb_widget_umrah_dream_fund_progress_loader"
        app:layout_constraintTop_toBottomOf="@+id/iv_widget_umrah_dream_fund_progress_loader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_dream_fund_progress_target_progress_loader"
        app:typographyType="small"
        app:typographyWeight="reguler"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintTop_toBottomOf="@+id/pb_widget_umrah_dream_fund_progress_loader"
        app:layout_constraintLeft_toLeftOf="@+id/pb_widget_umrah_dream_fund_progress_loader"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_12"
        />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_dream_fund_progress_percentage_loader"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_widget_umrah_dream_fund_progress_loader"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_16" />

</androidx.constraintlayout.widget.ConstraintLayout>
