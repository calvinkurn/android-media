<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/iv_widget_umrah_dream_fund_progress_loader"
        android:layout_width="@dimen/spacing_lvl6"
        android:layout_height="@dimen/spacing_lvl6"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:corners="45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_dream_fund_progress_title_loader"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginLeft="@dimen/unify_space_12"
        android:textColor="@color/Neutral_N700_96"
        app:corners="4"
        app:layout_constraintLeft_toRightOf="@+id/iv_widget_umrah_dream_fund_progress_loader"
        app:layout_constraintTop_toTopOf="@+id/iv_widget_umrah_dream_fund_progress_loader"
        app:typographyType="heading_5"
        app:typographyWeight="bold" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_dream_fund_progress_reach_est_loader"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:textColor="@color/Neutral_N700_68"
        app:corners="4"
        app:layout_constraintLeft_toLeftOf="@+id/tg_widget_umrah_dream_fund_progress_title_loader"
        app:layout_constraintTop_toBottomOf="@+id/tg_widget_umrah_dream_fund_progress_title_loader"
        app:typographyType="small"
        app:typographyWeight="reguler" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/pb_widget_umrah_dream_fund_progress_loader"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:corners="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_widget_umrah_dream_fund_progress_loader" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_dream_fund_progress_target_progress_loader"
        android:layout_width="@dimen/unify_space_96"
        android:layout_height="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:textColor="@color/Neutral_N700_68"
        app:corners="4"
        app:layout_constraintLeft_toLeftOf="@+id/pb_widget_umrah_dream_fund_progress_loader"
        app:layout_constraintTop_toBottomOf="@+id/pb_widget_umrah_dream_fund_progress_loader"
        app:typographyType="small"
        app:typographyWeight="reguler" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_widget_umrah_dream_fund_progress_percentage_loader"
        android:layout_width="@dimen/spacing_lvl6"
        android:layout_height="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:corners="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_widget_umrah_dream_fund_progress_loader" />

</androidx.constraintlayout.widget.ConstraintLayout>