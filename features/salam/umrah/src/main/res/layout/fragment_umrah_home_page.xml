<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_umrah_home_page"
    android:background="@color/Neutral_N0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_umrah_home_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_umrah_home_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/spacing_lvl5" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_umrah_home_page_message"
                android:layout_width="@dimen/spacing_lvl8"
                android:layout_height="@dimen/spacing_lvl8"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4"
                android:backgroundTint="@color/Green_G500"
                app:srcCompat="@drawable/ic_umrah_message"
                app:backgroundTint="@color/Green_G500"
                app:fabCustomSize="@dimen/spacing_lvl8"
                android:clickable="true"
                />
        </FrameLayout>
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</androidx.coordinatorlayout.widget.CoordinatorLayout>