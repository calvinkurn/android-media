<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_umrah_gallery_one_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    android:layout_marginRight="@dimen/spacing_lvl4"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/unify_space_12"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_one_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Perjalanan Umroh"
            app:typographyType="heading_5"
            android:textColor="@color/Neutral_N700"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_one_image_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="20 Nov - 29 Nov 2018"
            app:typographyType="body_3"
            android:layout_marginLeft="@dimen/unify_space_12"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iw_umrah_gallery_one_image"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginRight="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            />
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_gallery_one_image_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Alhamdulillah ibadah umroh kami berjalan dengan lancar tanpa halangan berarti."
            app:typographyType="body_3"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
