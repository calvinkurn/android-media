<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/rl_umrah_checkout_down_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:targetApi="m"
            tools:ignore="UnusedAttribute">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_umrah_checkout_bottom_sheet_payment_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/dp_16"
                android:text="@string/umrah_home_page_search_spinner_price_label"
                android:textColor="@color/Neutral_N700_96"
                app:typographyType="body_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
                android:id="@+id/radio_umrah_checkout_bottom_sheet_payment_option"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16" />
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/rl_umrah_chekout_payment_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/radio_umrah_checkout_bottom_sheet_payment_option"
            tools:targetApi="m"
            tools:ignore="UnusedAttribute">
            <View
                android:id="@+id/view_umrah_space"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Neutral_N100" />
            <LinearLayout
                android:layout_below="@+id/view_umrah_space"
                android:id="@+id/ll_payment_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/umrah_checkout_payment_option_label_installment"
                    android:textColor="@color/Neutral_N700"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_12"
                    app:typographyType="heading_6"
                    android:gravity="start"
                    app:typographyWeight="bold" />

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/umrah_chekcout_payment_option_label_due_date"
                    android:textColor="@color/Neutral_N700"
                    app:typographyType="heading_6"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="start"
                    android:layout_marginLeft="@dimen/dp_6"
                    app:typographyWeight="bold" />

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/umrah_checkout_payment_option_label_price"
                    android:textColor="@color/Neutral_N700"
                    app:typographyType="heading_6"
                    android:gravity="start"
                    app:typographyWeight="bold" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:id="@+id/rv_umrah_checkout_list_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_payment_option" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>