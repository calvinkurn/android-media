<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/root_view_umrah_homepage_package"
    android:layout_marginRight="@dimen/dp_8"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/dp_8">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_umrah_homepage_package"
        android:visibility="gone"
        android:layout_height="84dp"
        android:layout_width="@dimen/dp_180">
        <ImageView
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/umrah_bg_homepage_package_widget"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/Neutral_N700_96"
            tools:text="Umrah Reguler"
            android:layout_marginLeft="12dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_mulai_dari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_package_name"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_package_name"
            app:typographyType="small"
            app:typographyWeight="reguler"
            android:text="@string/umrah_home_page_start_from" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/orange_500"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_mulai_dari"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_mulai_dari"
            app:typographyType="heading_4"
            app:typographyWeight="bold"
            tools:text="Rp22.500.000" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:visibility="visible"
        android:id="@+id/container_umrah_homepage_package_shimmering"
        layout="@layout/widget_umrah_homepage_package_shimmering" />
</com.tokopedia.unifycomponents.CardUnify>
