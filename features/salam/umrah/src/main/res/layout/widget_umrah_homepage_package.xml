<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_umrah_homepage_package"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/spacing_lvl1"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_umrah_homepage_package"
        android:layout_width="@dimen/dimen_dp_180"
        android:layout_height="@dimen/unify_space_96"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        tools:ignore="UnusedAttribute"
        tools:targetApi="m">

        <ImageView
            android:layout_width="@dimen/unify_space_96"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/umrah_bg_homepage_package_widget"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_12"
            android:layout_marginLeft="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="Umrah Reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_mulai_dari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:text="@string/umrah_home_page_start_from"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_package_name"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_package_name"
            app:typographyType="small"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:textColor="@color/orange_500"
            app:layout_constraintStart_toStartOf="@+id/tg_umrah_mulai_dari"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_mulai_dari"
            app:typographyType="heading_4"
            app:typographyWeight="bold"
            tools:text="Rp22.500.000" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/container_umrah_homepage_package_shimmering"
        layout="@layout/widget_umrah_homepage_package_shimmering"
        android:visibility="visible" />
</androidx.cardview.widget.CardView>