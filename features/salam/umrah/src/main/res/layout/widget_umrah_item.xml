<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_widget_umrah_pdp_item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_widget_umrah_pdp_item"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/umrah_pdp_item_circle_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tg_widget_umrah_pdp_item_title"
            app:layout_constraintBottom_toBottomOf="@+id/tg_widget_umrah_pdp_item_desc"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/umrah_bg_pdp_travel_agent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_widget_umrah_pdp_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tg_widget_umrah_pdp_item_title"
            app:layout_constraintBottom_toBottomOf="@+id/tg_widget_umrah_pdp_item_desc"
            android:minHeight="@dimen/dp_24"
            android:minWidth="@dimen/dp_24"
            android:maxHeight="@dimen/dp_32"
            android:maxWidth="@dimen/dp_32" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_widget_umrah_pdp_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginBottom="1dp"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintBottom_toTopOf="@+id/tg_widget_umrah_pdp_item_desc"
            app:layout_constraintLeft_toRightOf="@+id/iv_widget_umrah_pdp_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Patuna Tour Travel"
            android:layout_marginStart="@dimen/dp_8" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_widget_umrah_pdp_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N700_44"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tg_widget_umrah_pdp_item_title"
            app:layout_constraintTop_toBottomOf="@+id/tg_widget_umrah_pdp_item_title"
            app:typographyType="small"
            app:typographyWeight="reguler"
            tools:text="Ijin Umrah No. 123/123" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:visibility="visible"
        android:id="@+id/container_widget_umrah_pdp_item_shimmering"
        layout="@layout/widget_umrah_pdp_item_shimmering" />
</androidx.constraintlayout.widget.ConstraintLayout>