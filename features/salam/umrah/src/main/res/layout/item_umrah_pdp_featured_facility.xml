<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="@dimen/dp_72"
    android:layout_width="@dimen/dp_72"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/umrah_bg_pdp_facility"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_item_umrah_pdp_featured_facilities">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_umrah_pdp_facility_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        app:srcCompat="@color/light_blue_300"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_pdp_facility_header"
        android:maxLines="2"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/iv_umrah_pdp_facility_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyType="small"
        app:typographyWeight="reguler"
        android:textColor="@color/Neutral_N700_68"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Makanan ajfoef"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"/>
</androidx.constraintlayout.widget.ConstraintLayout>