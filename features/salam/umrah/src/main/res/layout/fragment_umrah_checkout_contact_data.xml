<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0"
    android:padding="@dimen/spacing_lvl4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <com.tokopedia.salam.umrah.common.presentation.widget.UmrahAutoComplete
            android:id="@+id/ac_umrah_autocomplete_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:id="@+id/tf_umrah_checkout_contact_email"
            app:text_field_label_static="true"
            app:text_field_label="@string/travel_contact_data_email_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            app:text_field_input_type="textEmailAddress"
            android:maxLength="40"
            android:singleLine="true"
            app:text_field_placeholder="@string/umrah_checkout_bottom_sheet_contact_label_email" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_umrah_checkout_contact_phone_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_lvl1"
            android:paddingLeft="@dimen/spacing_lvl1"
            android:text="@string/umrah_checkout_bottom_sheet_contact_label_phone"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_umrah_checkout_contact_email"
            app:textViewTheme="lightDisabled"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lvl5"
            android:layout_marginLeft="@dimen/spacing_lvl1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_umrah_checkout_contact_phone_code"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Neutral_N100" />

            <com.tokopedia.unifycomponents.TextFieldUnify
                app:text_field_label_static="true"
                android:id="@+id/tf_umrah_checkout_contact_phone_number"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:imeOptions="actionDone"
                app:text_field_input_type="number"
                android:maxLength="15"
                app:text_field_placeholder="@string/umrah_checkout_bottom_sheet_contact_phone_minimum" />

        </LinearLayout>

    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_umrah_checkout_contact_data_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl8"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/umrah_checkout_bottom_sheet_button"
        app:buttonCompatType="primary"
        tools:ignore="UnusedAttribute"
        tools:targetApi="m" />

</RelativeLayout>