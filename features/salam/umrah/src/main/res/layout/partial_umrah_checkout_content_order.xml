<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_12"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_12"
    android:background="@color/white_65"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/umrah_checkout_order_title"
        android:lineHeight="@dimen/dp_18"
        android:textColor="@color/Neutral_N700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3"
        app:typographyWeight="bold"

        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_order_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineHeight="@dimen/dp_18"
        android:text="@string/umrah_checkout_order_desctiption"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_checkout_order_title"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Neutral_N700"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_widget_umrah_checkout_rect"
        android:background="@drawable/umrah_bg_order_checkout"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_checkout_order_description"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_checkout_order_customer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:textColor="@color/g_500"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="Muhammad Salah"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12" />

        <androidx.appcompat.widget.AppCompatImageView
            android:visibility="gone"
            android:id="@+id/iv_umrah_checkout_order_customer"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@id/tg_umrah_checkout_order_customer_title"
            app:layout_constraintLeft_toLeftOf="@id/tg_umrah_checkout_order_customer_title"
            android:src="@color/light_blue_300"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_checkout_order_customer_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_umrah_checkout_order_customer"
            app:layout_constraintTop_toTopOf="@id/iv_umrah_checkout_order_customer"
            tools:text="muhammad.salah@gmail.com"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            android:textColor="@color/Neutral_N700_68"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_checkout_order_customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_umrah_checkout_order_customer"
            app:layout_constraintTop_toBottomOf="@id/tg_umrah_checkout_order_customer_email"
            tools:text="085327499272"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            android:textColor="@color/Neutral_N700_68"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/tg_umrah_checkout_order_customer_email"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_umrah_checkout_order_customer_action"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            app:srcCompat="@drawable/umrah_ic_pencil"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_order_list_title_pilgrims"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/umrah_checkout_order_list_title_pilgrims"
        android:lineHeight="@dimen/dp_18"
        android:textColor="@color/Neutral_N700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_widget_umrah_checkout_rect"
        app:typographyType="heading_3"
        app:typographyWeight="bold"

        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_umrah_checkout_order_description_pilgrims"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineHeight="@dimen/dp_18"
        android:text="@string/umrah_checkout_order_description_pilgrims"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_checkout_order_list_title_pilgrims"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Neutral_N700"
        android:textColorLink="@color/green_500"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_umrah_checkout_pilgrims_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_checkout_order_description_pilgrims"
        />

</androidx.constraintlayout.widget.ConstraintLayout>