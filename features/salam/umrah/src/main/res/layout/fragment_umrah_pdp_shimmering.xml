<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.elyeproj.loaderviewlibrary.LoaderImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/umrah_pdp_images_top"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        app:layout_constraintTop_toBottomOf="@id/umrah_pdp_images_top"
        android:id="@+id/tg_umrah_pdp_title"
        android:layout_width="@dimen/dp_180"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
        android:id="@+id/iw_umrah_pdp_travel_agent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintLeft_toLeftOf="@id/tg_umrah_pdp_title"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_pdp_title"/>

    <View
        android:id="@+id/v_umrah_pdp_separator"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/Neutral_N75"
        app:layout_constraintLeft_toLeftOf="@id/iw_umrah_pdp_travel_agent"
        app:layout_constraintTop_toBottomOf="@id/iw_umrah_pdp_travel_agent"/>

    <com.tokopedia.salam.umrah.pdp.presentation.widget.UmrahPdpGreenRectWidget
        android:id="@+id/grw_umrah_pdp_hotel_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="@id/v_umrah_pdp_separator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_umrah_pdp_separator" />

    <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
        android:id="@+id/iw_umrah_pdp_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="@id/grw_umrah_pdp_hotel_type"
        app:layout_constraintTop_toBottomOf="@id/grw_umrah_pdp_hotel_type"/>

    <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
        android:id="@+id/iw_umrah_pdp_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="@id/iw_umrah_pdp_calendar"
        app:layout_constraintTop_toBottomOf="@id/iw_umrah_pdp_calendar"/>

    <com.tokopedia.salam.umrah.common.presentation.widget.UmrahItemWidget
        android:id="@+id/iw_umrah_pdp_plane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="@id/iw_umrah_pdp_hotel"
        app:layout_constraintTop_toBottomOf="@id/iw_umrah_pdp_hotel"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_pdp_hotel_title"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintLeft_toLeftOf="@id/iw_umrah_pdp_plane"
        app:layout_constraintTop_toBottomOf="@id/iw_umrah_pdp_plane" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_pdp_hotel_title"
        app:layout_constraintLeft_toLeftOf="@id/tg_umrah_pdp_hotel_title"
        android:layout_marginTop="@dimen/dp_12"/>

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/tg_umrah_pdp_hotel_title"
        app:layout_constraintLeft_toRightOf="@id/image1"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12" />


</androidx.constraintlayout.widget.ConstraintLayout>
