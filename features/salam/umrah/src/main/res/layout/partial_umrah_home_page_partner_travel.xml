<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/spacing_lvl6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/umrah_partner_section_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_title_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl5"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:text="@string/umrah_home_page_partner_label"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="heading_3"
            app:typographyWeight="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/spacing_lvl5" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_umrah_home_page_partner_travel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tg_umrah_title_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_umrah_list_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Lihat Semua"
            android:text="@string/umrah_travel_see_all_list"
            android:textColor="@color/Green_G500"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/umrah_partner_section_shimmering"
        layout="@layout/partial_umrah_home_page_partner_travel_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />
</FrameLayout>