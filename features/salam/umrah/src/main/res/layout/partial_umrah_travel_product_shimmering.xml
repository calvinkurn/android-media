<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/iv_umrah_image_loading_1"
        android:layout_width="@dimen/dp_90"
        android:layout_height="0dp"
        app:corners="16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_title_loading_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Neutral_N700_96"
        app:corners="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_umrah_image_loading_1"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_6" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_mulai_dari_loading_1"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        app:corners="4"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_plane_loading_1"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_plane_loading_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_price_loading_1"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_14"
        app:corners="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_mulai_dari_loading_1"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_mulai_dari_loading_1"
        app:typographyType="heading_5" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_calendar_loading_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:width="@dimen/dp_140"
        android:height="@dimen/dp_12"
        app:corners="4"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_title_loading_1"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_title_loading_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_hotel_loading_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:width="@dimen/dp_140"
        android:height="@dimen/dp_12"
        app:corners="4"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_calendar_loading_1"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_calendar_loading_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_plane_loading_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:width="@dimen/dp_140"
        android:height="@dimen/dp_12"
        app:corners="4"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_hotel_loading_1"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_hotel_loading_1" />
</androidx.constraintlayout.widget.ConstraintLayout>