<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/unify_space_96"
    android:layout_width="@dimen/dimen_dp_180">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_package_name_loading"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginStart="@dimen/unify_space_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/unify_space_96"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/unify_space_12"
        app:use_gradient="true"
        android:background="@drawable/umrah_bg_homepage_gray_rounded"
        />
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_mulai_dari_loading"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:use_gradient="true"
        android:background="@drawable/umrah_bg_homepage_gray_rounded"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_package_name_loading"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_package_name_loading" />
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tg_umrah_price_loading"
        android:layout_width="@dimen/unify_space_96"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:use_gradient="true"
        android:background="@drawable/umrah_bg_homepage_gray_rounded"
        app:layout_constraintStart_toStartOf="@+id/tg_umrah_mulai_dari_loading"
        app:layout_constraintTop_toBottomOf="@+id/tg_umrah_mulai_dari_loading" />
</androidx.constraintlayout.widget.ConstraintLayout>