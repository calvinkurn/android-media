<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_umrah_seekbar_range"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifycomponents.RangeSliderUnify
        app:valueFrom="5"
        app:valueTo="15"
        app:initialValue="5"
        app:step="1"
        app:initialMaxValue="15"
        android:id="@+id/dbs_background"
        app:layout_constraintLeft_toLeftOf="@+id/rv_umrah_seekbar_range"
        app:layout_constraintRight_toRightOf="@+id/rv_umrah_seekbar_range"
        app:layout_constraintTop_toBottomOf="@+id/rv_umrah_seekbar_range"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>