<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayoutColorLine" parent="Theme.Design.Light">
        <item name="android:textColorHint">@color/font_black_secondary_54</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/tkpd_main_green</item>
        <item name="colorControlHighlight">@color/tkpd_main_green</item>
    </style>
    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/TextInputLayoutColorLine</item>
    </style>
    <style name="HintTextInputLayoutColorLine" parent="TextInputLayoutColorLine">
        <item name="android:textColorHint">@color/grey_300</item>
    </style>
    <style name="HintTextInputLayout" parent="TextInputLayout">
        <item name="defaultTextColorLabel">@color/font_black_secondary_54</item>
        <item name="focusedTextColorLabel">@color/font_black_secondary_54</item>
        <item name="disabledTextColorLabel">@color/font_black_secondary_54</item>
        <item name="android:theme">@style/HintTextInputLayoutColorLine</item>
    </style>
</resources>