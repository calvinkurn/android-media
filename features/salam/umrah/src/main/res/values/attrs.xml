<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TicketView">
        <attr format="reference" name="tv_anchor1"/>
        <attr format="reference" name="tv_anchor2"/>

        <attr format="color" name="tv_dashColor"/>
        <attr format="dimension" name="tv_dashSize"/>
        <attr format="dimension" name="tv_circleSpace"/>
        <attr format="dimension" name="tv_circleRadius"/>
    </declare-styleable>


    <declare-styleable name="MyUmrahWidgetView">
        <attr format="boolean" name="showLoadingState"/>
    </declare-styleable>

    <declare-styleable name="CustomTicketView">
        <attr name="backgroundColor" format="color" />
        <attr name="scallopRadius" format="dimension" />
        <attr name="showBorder" format="boolean" />
        <attr name="showTopShadow" format="boolean" />
        <attr name="showBottomShadow" format="boolean" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="cornerType" format="enum">
            <enum name="normal" value="0" />
            <enum name="allrounded" value="1" />
            <enum name="roundedscallop" value="2" />
            <enum name="scalloprounded" value="3" />
            <enum name="allscallop" value="4" />
        </attr>
        <attr name="cornerRadius" format="dimension" />
        <attr name="android:elevation" />
        <attr name="ticketElevation" format="dimension" />

    </declare-styleable>
</resources>