query UmrahProduct($slugName: String!){
  umrahProduct(slugName: $slugName ){
    ui{
      travelDates
      travelDurations
      hotelStars
      variant
      transitCity
    }
    id
    availableSeat
    title
    banner
    slugName
    originalPrice
    slashPrice
    downPaymentPrice
    travelAgent{
      name
      logoUrl
      permissionOfUmrah
    }
    durationDays
    departureDate
    returningDate
    hotels{
      name
      checkIn
      checkOut
      imageUrl
      rating
      ui{
        distance
        stayDates
      }
    }
    airlines{
      name
      date
      departureCity{
        name
      }
      arrivalCity{
        name
      }
      logoUrl
    }
    itineraries{
      day
      description
    }
    featuredFacilities {
      iconUrl
      header
    }
    facilities
    nonFacilities
    transitCity{
      name
    }
    variant{
        id
        name
        description
        price
    }
    faq{
      allContentsLink
      contents{
        header
        snippet
        link
      }
    }
    terms
  }
}