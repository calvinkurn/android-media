<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/Unify_GN300"
                android:width="2dp"/>
            <corners
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp"/>
        </shape>
    </item>

    <item
        android:right="1dp"
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/Unify_GN50"/>
            <corners
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />
        </shape>
    </item>
</layer-list>