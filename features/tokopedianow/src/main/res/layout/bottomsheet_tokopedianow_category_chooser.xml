<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tokoNowCategoryChooserRecyclerView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dp_64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/tokoNowCategoryChooserButtonApplyContainer"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_64"
        android:visibility="gone"
        android:background="@color/Unify_N0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/tokoNowCategoryChooserButtonApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_8"
            android:gravity="center"
            tools:text="Tampilkan Produk"
            app:unifyButtonVariant="filled"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>