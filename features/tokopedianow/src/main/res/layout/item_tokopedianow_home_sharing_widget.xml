<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_sharing_education"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:visibility="visible"
    app:cardUseCompatPadding="true"
    app:contentPadding="-10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_bg_image_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/tokopedianow_sharing_education_background_content_description"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:srcCompat="@drawable/tokopedianow_bg_sharing_education_supergraphic_top" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_bg_image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/tokopedianow_sharing_education_background_content_description"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iu_close_sharing"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_sharing"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="8dp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_sharing"
            app:layout_constraintEnd_toStartOf="@+id/iu_close_sharing"
            app:layout_constraintStart_toEndOf="@+id/iu_sharing"
            app:layout_constraintTop_toTopOf="@+id/iu_sharing"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_sharing"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_sharing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:unifyButtonSize="small"
            android:text="@string/tokopedianow_home_sharing_education_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iu_sharing" />

        <ImageView
            android:id="@+id/iv_bg_image_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/tokopedianow_sharing_education_background_content_description"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

