<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="RtlHardcoded,RtlSymmetry">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_1"
        android:layout_width="0dp"
        android:layout_height="224dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_2"
        android:layout_width="0dp"
        android:layout_height="224dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_3"
        app:layout_constraintStart_toEndOf="@+id/shimmer_1"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_3"
        android:layout_width="0dp"
        android:layout_height="224dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shimmer_2"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect"/>

</androidx.constraintlayout.widget.ConstraintLayout>