<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_category_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:elevation="0dp"
        android:scaleType="centerCrop"
        android:padding="1dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/Unify_NN200"
        app:strokeWidth="1dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_category_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="1dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_category_image"
        app:layout_constraintStart_toStartOf="@+id/iv_category_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_category_image"
        app:typographyType="display_3" />
</androidx.constraintlayout.widget.ConstraintLayout>