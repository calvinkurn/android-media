<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.tokopedianow.common.view.NoAddressEmptyStateView
        android:id="@+id/empty_state_no_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/empty_state_failed_to_fetch_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:globalerrors_type="SERVER_ERROR"
        android:visibility="gone"/>

    <com.tokopedia.empty_state.EmptyStateUnify
        android:id="@+id/empty_state_no_address_and_local_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:unifyEmptyStateImageDrawable="@drawable/tokopedianow_ic_empty_state_no_address_no_local_cache"
        app:unifyEmptyStateTitle="@string/tokopedianow_empty_state_no_address_and_local_cache_title"
        app:unifyEmptyStateDescription = "@string/tokopedianow_empty_state_no_address_and_local_cache_description"
        app:unifyEmptyStateType="page"
        app:unifyEmptyStatePrimaryCTAText="@string/tokopedianow_empty_state_no_address_and_local_cache_primary_cta"
        app:unifyEmptyStateSecondaryCTAText="@string/tokopedianow_empty_state_no_address_and_local_cache_secondary_cta"
        android:visibility="gone"/>

</RelativeLayout>
