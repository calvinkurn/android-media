<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/feedback_widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        />

    <com.tokopedia.unifycomponents.CardUnify2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        android:foreground="?attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginTop="12dp"
        android:background="@color/Unify_N0"
        >
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingVertical="18dp"
           android:paddingStart="16dp"
           android:paddingEnd="12dp"
           >
           <com.tokopedia.unifycomponents.ImageUnify
               android:id="@+id/feeback_widget_img"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_width="73dp"
               android:layout_height="68dp"
               />
           <com.tokopedia.unifyprinciples.Typography
               android:id="@+id/feedback_widget_desc"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               app:typographyType="paragraph_3"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toEndOf="@+id/feeback_widget_img"
               app:layout_constraintEnd_toEndOf="parent"
               android:maxLines="2"
               android:ellipsize="end"
               android:layout_marginStart="11dp"
               />
           <com.tokopedia.unifycomponents.UnifyButton
               android:id="@+id/feeback_widget_cta"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/feedback_widget_desc"
               app:layout_constraintStart_toEndOf="@+id/feeback_widget_img"
               app:layout_constraintEnd_toEndOf="parent"
               android:text="@string/tokopedianow_feedback_widget_cta_text"
               android:layout_marginTop="6dp"
               android:layout_marginStart="11dp"
               app:unifyButtonSize="small"
               />
       </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify2>
</merge>