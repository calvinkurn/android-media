<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintBottom_toTopOf="@id/textSubtitle"
            app:layout_constraintRight_toLeftOf="@id/chevronRight"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintTop_toTopOf="@id/ivIcon"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="body_3"
            tools:text="Butuh produk tiba lebih cepat?" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintBottom_toBottomOf="@id/ivIcon"
            app:layout_constraintLeft_toLeftOf="@id/textTitle"
            app:layout_constraintLeft_toRightOf="@id/chevronRight"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Ke Tokopedia NOW! 20 menit tiba" />

        <View
            android:id="@+id/coachMarkTarget"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginStart="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toBottomOf="@id/textSubtitle"
            app:layout_constraintLeft_toRightOf="@id/ivIcon"
            app:layout_constraintTop_toTopOf="@id/textSubtitle" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/chevronRight"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="15dp"
            android:tint="@color/Unify_GN500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/iconunify_chevron_right" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>