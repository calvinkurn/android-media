<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent">
    
    <View
        android:id="@+id/tokoNowSearchCategoryRecomDivider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/Unify_N50" />

    <com.tokopedia.recommendation_widget_common.widget.carousel.RecommendationCarouselWidgetView
        android:id="@+id/tokoNowSearchCategoryRecomCarousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tokoNowSearchCategoryRecomDivider"/>

</RelativeLayout>