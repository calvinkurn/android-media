<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cb_add_all"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tp_selected_product_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tp_all_price" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_all_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:text="Semua (Rp125.000)"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@+id/ub_atc"
        app:layout_constraintStart_toEndOf="@+id/cb_add_all"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="paragraph_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_selected_product_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="4 produk terpilih"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tp_all_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tp_all_price"
        app:layout_constraintTop_toBottomOf="@+id/tp_all_price"
        app:typographyType="paragraph_3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/ub_atc"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:text="+Keranjang"
        app:unifyButtonVariant="ghost"
        app:layout_constraintBottom_toBottomOf="@+id/cb_add_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cb_add_all" />

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:background="@color/Unify_NN300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cb_add_all"
        app:layout_constraintStart_toStartOf="@+id/cb_add_all"
        app:layout_constraintTop_toBottomOf="@+id/cb_add_all" />

</androidx.constraintlayout.widget.ConstraintLayout>