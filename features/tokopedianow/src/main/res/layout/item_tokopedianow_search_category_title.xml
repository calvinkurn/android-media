<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoNowSearchCategoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/tokoNowSearchCategorySeeAllCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="16dp"
        app:typographyType="heading_4"
        tools:text="@string/tokopedianow_search_title"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoNowSearchCategorySeeAllCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_marginEnd="16dp"
        android:text="@string/tokopedianow_all_category"
        android:textColor="@color/Unify_G500"
        app:layout_constraintBottom_toBottomOf="@+id/tokoNowSearchCategoryTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tokoNowSearchCategoryTitle"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoNowSearchCategorySubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tokoNowSearchCategoryTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tokoNowSearchCategoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/tokoNowSearchCategoryTitle"
        app:layout_goneMarginEnd="16dp"
        app:typographyType="body_3"
        tools:text="Tiba dalam 15 menit" />

</androidx.constraintlayout.widget.ConstraintLayout>