<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoNowSearchCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/tokoNowSearchCategorySeeAllCategory"
        app:typographyType="heading_4"
        tools:text="@string/tokopedianow_search_title"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoNowSearchCategorySeeAllCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:text="@string/tokopedianow_all_category"
        android:layout_alignParentEnd="true"
        android:textColor="@color/Unify_G500"
        app:layout_constraintBottom_toBottomOf="@+id/tokoNowSearchCategoryTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tokoNowSearchCategoryTitle"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoNowSearchCategorySubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="-4dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/tokoNowSearchCategoryTitle"
        app:typographyType="body_3"
        tools:text="Tiba dalam 15 menit" />

</RelativeLayout>