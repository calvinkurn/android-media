<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderImageCategory"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        app:loader_corner_radius="@dimen/layout_lvl1"
        app:loader_type="rect"
        tools:ignore="RtlSymmetry" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderTextTitle"
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/loaderImageCategory"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl5"
        app:loader_type="line"
        tools:ignore="RtlSymmetry" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/tokonow_shimmering_divider_loader_height"
        android:layout_marginTop="@dimen/layout_lvl4"
        android:layout_below="@id/loaderImageCategory"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        app:loader_type="line" />

</RelativeLayout>