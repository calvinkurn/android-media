<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_two_hours"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tp_two_hours"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_two_hours"
            android:layout_width="36dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="@string/tokopedianow_home_educational_information_two_hours"
            app:layout_constraintBottom_toBottomOf="@+id/iu_two_hours"
            app:layout_constraintStart_toEndOf="@+id/iu_two_hours"
            app:layout_constraintTop_toTopOf="@+id/iu_two_hours"
            app:typographyType="heading_6" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_stock_available"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/tp_two_hours"
            app:layout_constraintStart_toEndOf="@+id/tp_two_hours"
            app:layout_constraintTop_toTopOf="@+id/tp_two_hours" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_stock_available"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="@string/tokopedianow_home_educational_information_stock_available"
            app:layout_constraintBottom_toBottomOf="@+id/iu_stock_available"
            app:layout_constraintStart_toEndOf="@+id/iu_stock_available"
            app:layout_constraintTop_toTopOf="@+id/iu_stock_available"
            app:typographyType="heading_6" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_guaranteed_quality"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/tp_stock_available"
            app:layout_constraintStart_toEndOf="@+id/tp_stock_available"
            app:layout_constraintTop_toTopOf="@+id/tp_stock_available" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_guaranteed_quality"
            android:layout_width="55dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="@string/tokopedianow_home_educational_information_guaranteed_quality"
            app:layout_constraintBottom_toBottomOf="@+id/iu_guaranteed_quality"
            app:layout_constraintStart_toEndOf="@+id/iu_guaranteed_quality"
            app:layout_constraintTop_toTopOf="@+id/iu_guaranteed_quality"
            app:typographyType="heading_6" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/la_chevron"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:paddingTop="@dimen/dp_10"
            android:layout_marginEnd="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_chevron"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="11dp"
            app:cardCornerRadius="40dp"
            app:cardMaxElevation="3dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_chevron_down"
                android:src="@drawable/iconunify_chevron_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/tokopedianow_educational_information_chevron_entry_point_to_show_bottomsheet" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
