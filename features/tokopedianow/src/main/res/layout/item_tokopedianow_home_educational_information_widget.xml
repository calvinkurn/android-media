<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_two_hours"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_two_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/tokopedianow_home_educational_information_two_hours"
            app:typographyType="heading_5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_stock_available"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_stock_available"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tokopedianow_home_educational_information_stock_available"
            app:typographyType="heading_5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_guaranteed_quality"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_gravity="center" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_guaranteed_quality"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tokopedianow_home_educational_information_guaranteed_quality"
            app:typographyType="heading_5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/la_chevron"
            android:paddingTop="10dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>


</androidx.cardview.widget.CardView>
