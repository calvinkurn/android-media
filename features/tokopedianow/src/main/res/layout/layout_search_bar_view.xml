<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/Unify_Background"
    android:gravity="center_vertical"
    android:paddingTop="4dp"
    android:paddingBottom="2dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:visibility="visible"
        app:icon_color_light_enable="@color/Unify_N500"
        app:icon_enable_state="true"
        app:icon_name="ARROW_BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/tokopedianow_bg_autocomplete_input"
        android:gravity="center_vertical"
        android:imeOptions="actionSearch"
        android:inputType="textNoSuggestions"
        android:lines="1"
        android:paddingStart="28dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingBottom="12dp"
        android:textColor="@color/Unify_N700_96"
        android:textColorHint="@color/Unify_N700_44"
        android:textCursorDrawable="@drawable/tokopedianow_bg_autocomplete_cursor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="16dp" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/searchIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:icon_color_light_enable="@color/Unify_N500"
        app:icon_enable_state="true"
        app:icon_name="SEARCH"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintLeft_toLeftOf="@id/editText"
        app:layout_constraintTop_toTopOf="@id/editText" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/clearButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:padding="8dp"
        android:visibility="gone"
        app:icon_color_light_enable="@color/Unify_N500"
        app:icon_enable_state="true"
        app:icon_name="CLEAR"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintRight_toRightOf="@id/editText"
        app:layout_constraintTop_toTopOf="@id/editText" />

</androidx.constraintlayout.widget.ConstraintLayout>