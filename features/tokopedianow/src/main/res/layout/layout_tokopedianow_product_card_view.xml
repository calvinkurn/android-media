<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <com.tokopedia.tokopedianow.common.view.TokoNowQuantityEditorView
            android:id="@+id/quantity_editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_view" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:translationZ="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_star_four"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/main_price_typography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view"
            tools:text="Rp1.500.000" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/discount_label"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            app:labelType="highlight_light_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_price_typography"
            app:labelTitle="100%" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/slashed_price_typography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/Unify_NN400"
            app:layout_constraintBottom_toBottomOf="@+id/discount_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/discount_label"
            app:layout_constraintTop_toTopOf="@+id/discount_label"
            app:typographyType="small"
            tools:text="95000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_name_typography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/Unify_NN950"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discount_label"
            app:typographyType="display_3"
            tools:text="Strawberry impor" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/category_info_typography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintBottom_toTopOf="@+id/rating_typography"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_name_typography"
            app:typographyType="small"
            tools:text="500 gr &#8226; Box" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/rating_typography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconUnify"
            app:typographyType="small"
            tools:text="4.5" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iconUnify"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:icon_color_light_enable="@color/Unify_YN300"
            app:icon_color_night_enable="@color/Unify_YN300"
            app:icon_name="STAR_FILLED"
            app:layout_constraintBottom_toBottomOf="@+id/rating_typography"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rating_typography" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
