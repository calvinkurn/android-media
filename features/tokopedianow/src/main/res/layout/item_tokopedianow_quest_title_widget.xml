<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="118dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="16dp"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/quest_title_widget"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tp_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/Unify_Static_White"
                android:text="@string/tokopedianow_quest_shop_again_and_get_gift"
                app:layout_constraintBottom_toTopOf="@+id/iu_gift"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="display_2"
                app:typographyWeight="bold"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tp_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/Unify_Static_White"
                app:layout_constraintBottom_toBottomOf="@+id/iu_gift"
                app:layout_constraintStart_toEndOf="@+id/iu_gift"
                app:layout_constraintTop_toTopOf="@+id/iu_gift"
                app:typographyType="display_3"
                app:typographyWeight="bold" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/iu_gift"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tp_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/quest_title_widget_error_state"
            android:visibility="gone"
            layout="@layout/partial_tokopedianow_quest_title_widget_error_state"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            android:id="@+id/quest_title_widget_shimmering"
            layout="@layout/partial_tokopedianow_quest_title_shimmering"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>