<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tokoNowSearchCategoryAisleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <View
        android:id="@+id/tokoNowSearchCategoryAisleDivider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoNowSearchCategoryAisleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tokoNowSearchCategoryAisleDivider"
        app:typographyType="heading_4" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/tokoNowSearchCategoryAisleGroupLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tokoNowSearchCategoryAisleImageLeft, tokoNowSearchCategoryAisleNameLeft"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/tokoNowSearchCategoryAisleGroupRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tokoNowSearchCategoryAisleImageRight, tokoNowSearchCategoryAisleNameRight"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/tokoNowSearchCategoryAisleImageLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintDimensionRatio="4:4"
        app:layout_constraintEnd_toStartOf="@id/tokoNowSearchCategoryAisleImageRight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokoNowSearchCategoryAisleHeader"
        app:unify_image_corner_radius="8"
        app:unify_image_type="rect" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/tokoNowSearchCategoryAisleImageRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintDimensionRatio="4:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tokoNowSearchCategoryAisleImageLeft"
        app:layout_constraintTop_toBottomOf="@id/tokoNowSearchCategoryAisleHeader"
        app:unify_image_corner_radius="8" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoNowSearchCategoryAisleNameLeft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/tokoNowSearchCategoryAisleImageLeft"
        app:layout_constraintStart_toStartOf="@id/tokoNowSearchCategoryAisleImageLeft"
        app:layout_constraintTop_toBottomOf="@id/tokoNowSearchCategoryAisleImageLeft"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Kategori" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoNowSearchCategoryAisleNameRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/tokoNowSearchCategoryAisleImageRight"
        app:layout_constraintStart_toStartOf="@id/tokoNowSearchCategoryAisleImageRight"
        app:layout_constraintTop_toBottomOf="@id/tokoNowSearchCategoryAisleImageRight"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Kategori" />


</androidx.constraintlayout.widget.ConstraintLayout>