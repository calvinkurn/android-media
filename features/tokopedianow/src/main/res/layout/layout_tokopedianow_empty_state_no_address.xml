<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    android:padding="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/tokonowEmptyStateIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tokonowEmptyStateTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokonowEmptyStateTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginEnd="@dimen/unify_space_8"
        android:gravity="center"
        android:text="@string/tokopedianow_common_empty_state_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokonowEmptyStateIcon"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokonowEmptyStateDesc"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/unify_space_16"
        android:text="@string/tokopedianow_common_empty_state_desc"
        android:textColor="@color/Unify_NN600"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tokonow_empty_state_primary_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokonowEmptyStateTitle"
        app:typographyType="display_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/tokonow_empty_state_primary_btn"
        android:layout_width="@dimen/dp_240"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="@string/tokopedianow_common_empty_state_button_change_address"
        app:layout_constraintBottom_toTopOf="@id/tokonow_empty_state_secondary_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokonowEmptyStateDesc"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/tokonow_empty_state_secondary_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tokopedianow_common_empty_state_button_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokonow_empty_state_primary_btn"
        app:unifyButtonSize="medium"
        app:unifyButtonVariant="text" />

</androidx.constraintlayout.widget.ConstraintLayout>