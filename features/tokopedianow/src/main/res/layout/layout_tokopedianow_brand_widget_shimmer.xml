<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/title_shimmer"
        android:layout_width="74dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@id/chevron_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/chevron_shimmer"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/chevron_shimmer"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/brand_shimmer"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_shimmer"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/brand_shimmer_1"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/brand_shimmer"
        app:layout_constraintTop_toTopOf="@id/brand_shimmer"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/brand_shimmer_2"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/brand_shimmer_1"
        app:layout_constraintTop_toTopOf="@id/brand_shimmer"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/brand_shimmer_3"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/brand_shimmer_2"
        app:layout_constraintTop_toTopOf="@id/brand_shimmer"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />
</androidx.constraintlayout.widget.ConstraintLayout>