<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.carousel.CarouselUnify
        android:id="@+id/media_carousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/Unify_NN600"
        tools:layout_height="232dp" />

    <com.tokopedia.unifycomponents.PageControl
        android:id="@+id/page_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/gradient_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.2"
        android:background="@drawable/tokopedianow_gradient_top"
        app:layout_constraintBottom_toTopOf="@id/gradient_bottom"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/gradient_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.2"
        android:background="@drawable/tokopedianow_gradient_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gradient_top" />
</androidx.constraintlayout.widget.ConstraintLayout>
