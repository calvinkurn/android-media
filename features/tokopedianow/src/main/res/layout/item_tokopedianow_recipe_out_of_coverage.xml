<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tokopedianow_recipe_ooc_header_text"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_1"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="@string/tokopedianow_recipe_ooc_sub_header_text"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_header"
        app:typographyType="display_3" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_illustration"
        android:layout_width="128dp"
        android:layout_height="96dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_sub_header" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="top"
        android:maxLines="2"
        android:text="@string/tokopedianow_recipe_ooc_title_text"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_illustration"
        app:layout_constraintTop_toTopOf="@+id/image_illustration"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="top"
        android:maxLines="2"
        android:text="@string/tokopedianow_recipe_ooc_description_text"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@+id/text_title"
        app:layout_constraintStart_toStartOf="@+id/text_title"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:typographyType="paragraph_3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_change_address"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/tokopedianow_recipe_change_address"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_illustration"
        app:unifyButtonSize="small"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_learn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintTop_toBottomOf="@id/btn_change_address"
        app:typographyType="display_3" />
</androidx.constraintlayout.widget.ConstraintLayout>