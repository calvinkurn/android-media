<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/deferredImageView"
        android:layout_width="@dimen/tokopedianow_repurchase_empty_state_no_history_image_width"
        android:layout_height="@dimen/tokopedianow_repurchase_empty_state_no_history_image_height"
        android:layout_marginStart="@dimen/unify_space_32"
        android:layout_marginTop="@dimen/unify_space_32"
        android:layout_marginEnd="@dimen/unify_space_32"
        android:contentDescription="@string/tokopedianow_content_desc_image_empty_product"
        app:imageDpiSupportType="singleDpi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:remoteFileName="filtered_product_empty_state.png" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_desc"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_32"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_32"
        android:gravity="center"
        android:text="@string/tokopedianow_repurchase_empty_state_no_history_desc_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tp_title"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_64"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_64"
        android:gravity="center"
        android:text="@string/tokopedianow_repurchase_empty_state_no_history_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deferredImageView"
        app:typographyType="heading_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_open_tokopedianow"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_64"
        android:layout_marginTop="@dimen/unify_space_24"
        android:layout_marginEnd="@dimen/unify_space_64"
        android:text="@string/tokopedianow_repurchase_empty_state_no_history_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tp_desc"
        app:unifyButtonType="alternate"
        app:unifyButtonVariant="ghost" />

</androidx.constraintlayout.widget.ConstraintLayout>