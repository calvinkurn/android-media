<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_shimmering_layout"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.LoaderUnify android:id="@+id/siv_category"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        app:loader_type="rect" />

    <include
        layout="@layout/partial_tokopedianow_home_category_top_linearlayout_shimmering"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"/>

    <include
        layout="@layout/partial_tokopedianow_home_category_linearlayout_shimmering"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</LinearLayout>