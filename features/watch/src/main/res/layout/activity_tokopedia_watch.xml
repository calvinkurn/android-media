<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TokopediaWatchActivity">
    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="heading_2"
        android:layout_margin="16dp"
        android:text="Welcome to Tokopedia Watch Playground!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="body_1"
        android:layout_marginStart="16dp"
        android:text="Connected device:"
        app:typographyWeight="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_connected_device"
        app:typographyType="body_2"
        android:layout_marginStart="16dp"
        tools:text="Ticwatch II"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="body_1"
        android:layout_marginStart="16dp"
        android:text="Is Companion App Installed:"
        app:typographyWeight="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_companion_app"
        app:typographyType="body_2"
        android:layout_marginStart="16dp"
        android:text="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="body_1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Last message from watch:"
        app:typographyWeight="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_last_message"
        app:typographyType="body_2"
        android:layout_marginStart="16dp"
        tools:text="Message from watch"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="16dp"
        app:typographyType="body_2"
        android:layout_marginStart="16dp"
        android:text="Select action:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_start_watch"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:unifyButtonSize="medium"
        android:text="Start tokopedia watch app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_send_message"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:unifyButtonSize="medium"
            android:text="Send as message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.tokopedia.unifycomponents.TextFieldUnify2
            android:id="@+id/et_message"
            app:unify_text_field_placeholder="Input message..."
            android:layout_marginStart="16dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_send_data"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:unifyButtonSize="medium"
            android:text="Send as data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.tokopedia.unifycomponents.TextFieldUnify2
            android:id="@+id/et_data"
            app:unify_text_field_placeholder="Input data..."
            android:layout_marginStart="16dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_accept_bulk_order"
        android:text="Accept Orders"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:unifyButtonSize="medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="16dp"
        app:typographyType="body_2"
        android:layout_marginStart="16dp"
        android:text="Log:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_log"
            android:layout_marginTop="16dp"
            app:typographyType="body_3"
            android:layout_marginStart="16dp"
            android:text="Log from "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>