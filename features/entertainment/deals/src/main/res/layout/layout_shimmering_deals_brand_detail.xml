<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/shimmering_brand_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_image_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_128"
        app:corners="16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/loader_image_icon"
        android:layout_width="@dimen/unify_space_96"
        android:layout_height="@dimen/unify_space_96"
        android:layout_marginTop="@dimen/unify_space_64"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_lvl3"
            app:corners="16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.tokopedia.unifycomponents.CardUnify>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_title"
        app:corners="16"
        android:layout_width="@dimen/deals_dp_180"
        android:layout_height="@dimen/spacing_lvl5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@+id/loader_image_icon"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_desc_1"
        app:corners="16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@+id/loader_title"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_desc_2"
        app:corners="16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl8"
        app:layout_constraintTop_toBottomOf="@+id/loader_desc_1"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_desc_3"
        app:corners="16"
        android:layout_width="@dimen/deals_dp_180"
        android:layout_height="@dimen/spacing_lvl5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@+id/loader_desc_2"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/title_list"
        app:corners="16"
        android:layout_width="@dimen/deals_dp_180"
        android:layout_height="@dimen/spacing_lvl5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@+id/loader_desc_3"/>

    <include
        android:id="@+id/loader_item_1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/layout_shimmering_deals_brand_detail_list_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_list"
        />

    <include
        android:id="@+id/loader_item_2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/layout_shimmering_deals_brand_detail_list_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_item_1"
        />

    <include
        android:id="@+id/loader_item_3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/layout_shimmering_deals_brand_detail_list_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_item_2"
        />

    <include
        android:id="@+id/loader_item_4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/layout_shimmering_deals_brand_detail_list_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_item_3"
        />

    <include
        android:id="@+id/loader_item_5"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/layout_shimmering_deals_brand_detail_list_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_item_4"
        />

</androidx.constraintlayout.widget.ConstraintLayout>