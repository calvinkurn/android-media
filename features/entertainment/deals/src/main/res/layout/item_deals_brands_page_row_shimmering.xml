<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/shimmering_brand_1"
        layout="@layout/item_deals_brand_popular_shimmering"
        android:layout_width="@dimen/deals_dp_78"
        android:layout_height="@dimen/deals_dp_100"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shimmering_brand_2"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmering_brand_2"
        layout="@layout/item_deals_brand_popular_shimmering"
        android:layout_width="@dimen/deals_dp_78"
        android:layout_height="@dimen/deals_dp_100"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/shimmering_brand_1"
        app:layout_constraintRight_toLeftOf="@id/shimmering_brand_3"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmering_brand_3"
        layout="@layout/item_deals_brand_popular_shimmering"
        android:layout_width="@dimen/deals_dp_78"
        android:layout_height="@dimen/deals_dp_100"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/shimmering_brand_2"

        app:layout_constraintRight_toLeftOf="@id/shimmering_brand_4"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmering_brand_4"
        layout="@layout/item_deals_brand_popular_shimmering"
        android:layout_width="@dimen/deals_dp_78"
        android:layout_height="@dimen/deals_dp_100"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/shimmering_brand_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>