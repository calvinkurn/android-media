<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_lvl5"
    app:layout_scrollFlags="scroll">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_not_found_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/deals_dp_12"
        android:gravity="center_horizontal"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_1"
        tools:text="@string/deals_no_brand_text" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_not_found_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/deals_dp_6"
        android:layout_marginBottom="@dimen/deals_dp_12"
        android:gravity="center_horizontal"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_not_found_title"
        app:typographyType="display_2"
        tools:text="@string/deals_no_brand_subtext" />

</androidx.constraintlayout.widget.ConstraintLayout>