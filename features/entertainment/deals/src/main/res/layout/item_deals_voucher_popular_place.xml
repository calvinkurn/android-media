<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/deals_dp_12"
    android:paddingTop="@dimen/spacing_lvl5"
    android:paddingBottom="@dimen/spacing_lvl2"
    >

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_voucher_popular_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_4"
        tools:text="Voucher di tempat populer" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_voucher_popular_place_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_3"
        tools:text="Cek voucher di tempat nongkrong favoritmu!" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lst_voucher_popular_place_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="4"
        tools:layoutManager="GridLayoutManager"
        tools:listitem="@layout/item_deals_voucher_place_card"
        tools:spanCount="2"
        android:layout_marginTop="@dimen/deals_dp_12"/>

</LinearLayout>