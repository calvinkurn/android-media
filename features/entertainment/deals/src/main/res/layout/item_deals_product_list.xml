<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lst_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/deals_dp_14"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layoutManager="GridLayoutManager"
        tools:listitem="@layout/item_deals_product_card"
        tools:spanCount="2"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:clipToPadding="true"
        />

    <include
        android:id="@+id/shimmering"
        layout="@layout/item_deals_product_cards_shimmering"
        tools:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>