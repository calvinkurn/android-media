<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deals_category_filter_bottom_sheet_subtitle"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lst_deals_category_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:orientation="horizontal"
        tools:layoutManager="StaggeredGridLayoutManager"
        android:layout_marginLeft="@dimen/deals_dp_minus_4"
        android:layout_marginRight="@dimen/deals_dp_minus_4"
        tools:spanCount="3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_deals_category_filter_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/deals_dp_12"
        android:text="@string/deals_filter_submit"
        android:textSize="@dimen/fontSize_lvl4"
        android:textStyle="bold"
        app:unifyButtonSize="large"
        app:unifyButtonVariant="filled" />

</LinearLayout>