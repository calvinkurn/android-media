<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/tv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3"
                app:loader_corner_radius="0dp"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/deals_dp_12"
                android:layout_marginTop="@dimen/deals_dp_12"
                android:layout_marginRight="@dimen/deals_dp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_image"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                app:loader_corner_radius="8dp"
                app:loader_type="rect"
                android:id="@+id/tv_sub_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/deals_dp_12"
                android:layout_marginTop="@dimen/deals_dp_12"
                android:layout_marginRight="@dimen/deals_dp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <com.tokopedia.unifycomponents.LoaderUnify
                app:corners="16"
                app:loader_corner_radius="8dp"
                app:loader_type="rect"
                android:id="@+id/tv_sub_price"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/deals_dp_12"
                android:layout_marginTop="@dimen/deals_dp_12"
                android:layout_marginRight="@dimen/deals_dp_12"
                android:layout_marginBottom="@dimen/deals_dp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sub_title"
                app:layout_constraintWidth_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/tv_image1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3"
                app:loader_corner_radius="0dp"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                app:loader_corner_radius="8dp"
                app:loader_type="rect"
                android:id="@+id/tv_title1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/deals_dp_12"
                android:layout_marginTop="@dimen/deals_dp_12"
                android:layout_marginRight="@dimen/deals_dp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_image1" />

            <com.tokopedia.unifycomponents.LoaderUnify
                app:loader_corner_radius="8dp"
                app:loader_type="rect"
                android:id="@+id/tv_sub_title1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/deals_dp_12"
                android:layout_marginTop="@dimen/deals_dp_12"
                android:layout_marginRight="@dimen/deals_dp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title1" />

            <com.tokopedia.unifycomponents.LoaderUnify
                app:loader_corner_radius="8dp"
                app:loader_type="rect"
                android:id="@+id/tv_sub_price1"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/deals_dp_12"
                android:layout_marginTop="@dimen/deals_dp_12"
                android:layout_marginRight="@dimen/deals_dp_12"
                android:layout_marginBottom="@dimen/deals_dp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sub_title1"
                app:layout_constraintWidth_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>