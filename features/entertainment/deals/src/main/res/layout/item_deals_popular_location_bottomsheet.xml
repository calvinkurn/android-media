<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_popular_loc"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_popular_loc_name"
        android:layout_width="@dimen/deals_dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:textColor="@color/deal_location_text_color"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/tv_popular_loc_address"
        app:layout_constraintLeft_toRightOf="@+id/img_popular_loc"
        app:layout_constraintRight_toLeftOf="@+id/tv_popular_loc_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Monumen Nasional" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_popular_loc_address"
        android:layout_width="@dimen/deals_dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Setiabudi, Karet Kuningan, Jakarta Selatan"
        app:typographyType="body_3"
        android:textColor="@color/deal_location_grey_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_popular_loc"
        app:layout_constraintRight_toLeftOf="@+id/tv_popular_loc_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_popular_loc_name"
        tools:visibility="visible" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_popular_loc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:background="@drawable/bg_deals_grey_loc_type"
        android:padding="@dimen/spacing_lvl2"
        android:textColor="@color/deal_location_type"
        app:typographyType="small"
        app:layout_constraintLeft_toRightOf="@+id/tv_popular_loc_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Landmark"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/deals_search_divider_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_popular_loc_address" />

</androidx.constraintlayout.widget.ConstraintLayout>