<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDealsHomeCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/deals_dp_12"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/layout_lvl1"
        android:paddingRight="@dimen/layout_lvl1"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="5" />

    <include
        android:id="@+id/contentCategoriesShimmering"
        layout="@layout/item_deals_category_shimmering"/>

</androidx.constraintlayout.widget.ConstraintLayout>
