<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        app:corners="16"
        android:id="@+id/banner_first"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.75"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl8"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        app:corners="16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/banner_first"
        app:layout_constraintWidth_percent="0.75"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl8"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        app:corners="16"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/deals_dp_12"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/deals_dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_first" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        app:corners="16"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/deals_dp_12"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/deals_dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_first" />


</androidx.constraintlayout.widget.ConstraintLayout>