<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/shimmering_brand_row_1"
        layout="@layout/item_deals_brands_page_row_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <include
        android:id="@+id/shimmering_brand_row_2"
        layout="@layout/item_deals_brands_page_row_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_brand_row_1" />

    <include
        android:id="@+id/shimmering_brand_row_3"
        layout="@layout/item_deals_brands_page_row_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_brand_row_2" />

    <include
        android:id="@+id/shimmering_brand_row_4"
        layout="@layout/item_deals_brands_page_row_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_brand_row_3" />

</androidx.constraintlayout.widget.ConstraintLayout>