<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/voucher_deals_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:layout_marginLeft="@dimen/spacing_lvl3"
    android:layout_marginRight="@dimen/spacing_lvl3"
    android:paddingTop="@dimen/spacing_lvl2"
    android:paddingBottom="@dimen/spacing_lvl2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_product"
        android:layout_width="@dimen/deals_dp_72"
        android:layout_height="@dimen/deals_dp_72"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:cardElevation="@dimen/layout_lvl0"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_brand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/bg_deals_shimmer_home_bg"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:lineSpacingExtra="2sp"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingStart="@dimen/spacing_lvl2"
        android:paddingLeft="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_44"
        android:textSize="@dimen/fontSize_lvl2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_product"
        tools:text="Hong Tang" />

    <TextView
        android:id="@+id/tv_simple_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:ems="15"
        android:textSize="@dimen/fontSize_lvl3"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintLeft_toRightOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
        tools:text="Durian Soupyfyufjvgvjkuvgfuyyyyyyyy" />


    <TextView
        android:id="@+id/tv_sales_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSize_lvl3"
        android:textColor="@color/Unify_N700_96"
        tools:text="Rp25.000"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_simple_item"
        />

    <TextView
        android:id="@+id/mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSize_lvl2"
        android:textColor="@color/Unify_N700_68"
        tools:text=" Rp50.000"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:gravity="center"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_sales_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_simple_item"
        />

    <TextView
        android:id="@+id/tv_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:background="@drawable/bg_deals_softpink_box"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_lvl1"
        android:paddingLeft="@dimen/spacing_lvl3"
        android:paddingRight="@dimen/spacing_lvl3"
        android:paddingTop="@dimen/spacing_lvl1"
        android:textColor="@color/Unify_R500"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_simple_item"
        tools:text="20% OFF" />

</androidx.constraintlayout.widget.ConstraintLayout>