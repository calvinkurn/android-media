<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/image_left"
        app:corners="16"
        android:layout_width="@dimen/unify_space_96"
        android:layout_height="@dimen/unify_space_96"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_description_1"
        app:corners="16"
        android:layout_width="@dimen/spacing_lvl8"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toRightOf="@+id/image_left"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_description_2"
        app:corners="16"
        android:layout_width="@dimen/deals_dp_200"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/unify_space_12"
        app:layout_constraintLeft_toRightOf="@+id/image_left"
        app:layout_constraintTop_toBottomOf="@+id/loader_description_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_description_3"
        app:corners="16"
        android:layout_width="@dimen/deals_dp_180"
        android:layout_height="@dimen/spacing_lvl1"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintLeft_toRightOf="@+id/image_left"
        app:layout_constraintTop_toBottomOf="@+id/loader_description_2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_description_4"
        app:corners="16"
        android:layout_width="@dimen/deals_dp_141"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintLeft_toRightOf="@+id/image_left"
        app:layout_constraintTop_toBottomOf="@+id/loader_description_3" />

</androidx.constraintlayout.widget.ConstraintLayout>