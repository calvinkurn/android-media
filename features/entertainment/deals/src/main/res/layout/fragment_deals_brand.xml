<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deals_brand_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/layout_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_brand_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginBottom="@dimen/deals_dp_14"
            android:textColor="@color/Unify_N700_96"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_4"
            tools:text="Terpopuler"
            tools:visibility="visible" />

        <View
            android:id="@+id/unused_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/deals_dp_1"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:background="@color/Unify_N75"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_brand_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_brand_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_brand_title"
            tools:visibility="gone" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmering_title"
            android:layout_width="@dimen/deals_dp_100"
            android:layout_height="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            app:corners="16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>