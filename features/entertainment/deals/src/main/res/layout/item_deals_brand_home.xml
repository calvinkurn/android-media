<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/spacing_lvl2"
    android:layout_marginRight="@dimen/spacing_lvl2"
    android:padding="@dimen/spacing_lvl2"
    android:orientation="vertical"
    android:id="@+id/brand_view_holder_layout">

    <LinearLayout
        android:id="@+id/ll_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_brand"
            android:layout_width="@dimen/deals_item_brand_iv_width"
            android:layout_height="@dimen/deals_item_brand_iv_width"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl1"
            android:scaleType="fitCenter"
            android:contentDescription="@string/deals_image_brand_content_description"/>


        <TextView
            android:id="@+id/brandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSize_lvl1"
            android:textColor="@color/Unify_N700_96"
            android:ellipsize="end"
            android:maxLines="2"
            android:lines="2"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/spacing_lvl1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl2"
            tools:text="Carls \n oo" />

    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>