<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Unify_Background">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Pacific Place"
        android:layout_marginStart="16dp"
        app:typographyType="body_1"
        app:typographyWeight="reguler"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/Unify_NN950_68"
        app:layout_constraintTop_toTopOf="parent" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_location_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2sp"
        android:layout_marginStart="16dp"
        tools:text="PACIFIC PLACE MALL, 4th Floorâ€¦"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        android:textColor="@color/Unify_NN950_32"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="50dp"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/iv_map"
        app:layout_constraintTop_toBottomOf="@id/tg_location_name" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_map"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_see_location"
        app:layout_constraintBottom_toBottomOf="@id/tg_location_address"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tg_location_name"
        android:contentDescription="@string/deals_pdp_content_desc_img"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_location_address" />

</androidx.constraintlayout.widget.ConstraintLayout>
