<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_lvl5"
    android:layout_marginHorizontal="@dimen/spacing_lvl4">

    <ImageView
        android:id="@+id/img_category_empty"
        android:layout_width="@dimen/deals_dp_141"
        android:layout_height="@dimen/deals_dp_105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_category_empty" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_category_empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:text="@string/deals_category_empty_title"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintBottom_toTopOf="@+id/txt_category_empty_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_category_empty"
        app:layout_constraintTop_toTopOf="@+id/img_category_empty"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_category_empty_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:text="@string/deals_category_empty_description"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/img_category_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_category_empty"
        app:layout_constraintTop_toBottomOf="@+id/txt_category_empty_title"
        app:typographyType="body_3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_category_empty_reset_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/deals_category_empty_reset_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_category_empty"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

</androidx.constraintlayout.widget.ConstraintLayout>