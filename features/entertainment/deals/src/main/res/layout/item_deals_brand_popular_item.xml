<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/deals_item_brand_popular_height"
    android:gravity="center_horizontal"
    android:padding="@dimen/spacing_lvl2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgDealsBrand"
            android:layout_width="@dimen/deals_item_brand_iv_width"
            android:layout_height="@dimen/deals_item_brand_iv_width"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/bg_deals_popular_brand" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txtDealsBrand"
            android:layout_width="@dimen/deals_item_brand_iv_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="2"
            android:maxLines="2"
            android:minLines="2"
            android:singleLine="false"
            android:textColor="@color/Unify_N700_96"
            app:autoSizeMaxTextSize="@dimen/fontSize_lvl2"
            android:paddingTop="@dimen/spacing_lvl1"
            android:paddingBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgDealsBrand"
            app:layout_constraintStart_toStartOf="@+id/imgDealsBrand"
            app:layout_constraintTop_toBottomOf="@+id/imgDealsBrand"
            app:typographyType="small"
            tools:text="KOI \n Teppanyaki" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>