<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExpandableStyleArrow" parent="style_expandable_option_default">
        <item name="eo_text_option_style">@style/TextView.Small.Bold</item>
        <item name="eo_header_style">@style/ExpandableHeaderStyle</item>
    </style>

    <style name="ExpandableHeaderStyle" parent="eo_header_style">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

</resources>
