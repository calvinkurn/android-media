<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.entertainment.pdp">

    <application
        android:allowBackup="true"
        android:label=""
        android:supportsRtl="true">

        <activity
            android:name=".activity.EventPDPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_event"
                    android:pathPattern="@string/path_event_pdp"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.EventPDPTicketActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_event"
                    android:pathPattern="@string/path_event_choose_package"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.EventCheckoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:label="@string/ent_event_checkout_title_page"
            >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_event"
                    android:pathPattern="@string/path_event_checkout"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.EventPDPFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:label="@string/ent_pdp_title_form"
            >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_event"
                    android:pathPattern="@string/path_event_form"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>