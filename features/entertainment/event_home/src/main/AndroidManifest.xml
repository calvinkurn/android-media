    <manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.entertainment">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name="com.tokopedia.entertainment.home.activity.HomeEventActivity"
            android:label="@string/entertainment_event_hiburan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" >

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_event"
                    android:path="@string/path_event_home"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

    </application>

</manifest>
