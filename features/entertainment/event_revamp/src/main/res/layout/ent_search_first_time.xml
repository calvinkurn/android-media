<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_location_event_ent_gradient"
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/imgToped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ent_ic_events"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtFirstTimeFirstHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/entertainment_event_search_first_time_firstHeading"
        android:textColor="#31353b"
        android:layout_marginLeft="10dp"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        app:layout_constraintStart_toEndOf="@id/imgToped"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtFirstTimeSecondHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:text="@string/entertainment_event_search_first_time_secondHeading"
        app:typographyType="body_3"
        app:layout_constraintTop_toBottomOf="@+id/txtFirstTimeFirstHeading"
        app:layout_constraintStart_toEndOf="@id/imgToped"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>