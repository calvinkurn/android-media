<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="@dimen/dp_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <RelativeLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/dp_4"
            android:background="@drawable/ent_ic_circle"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ent_ic_wishlist_inactive" />
        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/event_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="@dimen/dp_4"
            android:singleLine="true"
            android:paddingRight="8dp"
            android:textColor="@color/Neutral_N700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/event_date"
            app:layout_constraintTop_toBottomOf="@+id/event_image"
            app:typographyType="heading_6"
            tools:text="Grand Galaxy Convention Hall" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:paddingRight="8dp"
            android:textColor="@color/Neutral_N700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/event_date"
            app:layout_constraintTop_toBottomOf="@+id/event_location"
            app:typographyType="heading_4"
            tools:text="Bekasi Wedding Exhibitiâ€¦" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typography5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N700"
            app:layout_constraintBottom_toBottomOf="@+id/event_price"
            app:layout_constraintStart_toStartOf="@+id/event_title"
            app:layout_constraintTop_toTopOf="@+id/event_price"
            app:typographyType="body_3"
            android:text="Mulai dari" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/event_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:paddingRight="8dp"
            android:textColor="@color/Neutral_N700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/typography5"
            app:layout_constraintTop_toBottomOf="@+id/event_title"
            app:typographyType="heading_4"
            tools:text="Rp1.289.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textColor="#689c9e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/event_location"
            app:typographyType="heading_2"
            tools:text="20\nSEP" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>