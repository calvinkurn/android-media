<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imgNyasar"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/nyasar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ent_oops"
        android:textColor="@color/color_black"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgNyasar"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/noCari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ent_intip_kategori"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_gray"
        app:typographyType="body_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typography" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/resetFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ent_reset_filter"
        android:background="@drawable/bg_text_reset_filter"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noCari" />

</androidx.constraintlayout.widget.ConstraintLayout>