        android:orientation="horizontal"
        android:rowCount="4">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_160"
            android:layout_margin="@dimen/dp_10"
