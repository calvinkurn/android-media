query EventCategories($category:String!){
  event_child_category(categoryName: "event", categoryID: 1, verticalID: 3){
    categories{
        id
        name
        title
        media_url
        app_url
      priority
    }
  }
  event_location_search(
    searchParams: [
      {key: "size", value: "8"}, {key: "page_no", value: "1"},
      {key: "category_id", value: "1"}]) {
    locations {
      id
      name
      coordinates
      city_id
      priority
      image_app
      address
    }
    count
  }
  event_home(category: $category) {
    layout {
      id
      title
      category_url
      is_card
      app_url
      items {
        id
        rating
        display_name
        title
        image_app
        sales_price
        city_name
        price
        location
        schedule
        app_url
        url
        is_promo
        seo_url
      }
    }
  }
}