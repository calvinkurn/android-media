<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_checkout_event_additional_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_event_additional_item_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_1"
        android:background="@color/Unify_N700_44"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_event_additional_item_title"
        app:layout_constraintTop_toTopOf="@+id/view_event_additional_item_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Adult 1"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_event_additional_fill_data"
        app:layout_constraintTop_toTopOf="@+id/view_event_additional_item_line"
        app:layout_constraintRight_toLeftOf="@+id/img_event_package_arrow_right"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ent_checkout_data_tambahan_fill_data"
        app:typographyType="body_1"
        android:textColor="@color/Unify_G500"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_event_package_arrow_right"
        android:layout_width="@dimen/spacing_lvl4"
        android:layout_height="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="@+id/view_event_additional_item_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/dimen_dp_27"
        android:layout_marginRight="@dimen/spacing_lvl6"
        app:srcCompat="@drawable/ic_event_checkout_arrow_right"
        />


</androidx.constraintlayout.widget.ConstraintLayout>