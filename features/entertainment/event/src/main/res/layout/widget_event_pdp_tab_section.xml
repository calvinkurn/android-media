<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.TabsUnify
        android:id="@+id/tab_widget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_0">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ent_pdp_about_this"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ent_pdp_facilities" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ent_pdp_detail_lokasi" />

    </com.tokopedia.unifycomponents.TabsUnify>

</LinearLayout>