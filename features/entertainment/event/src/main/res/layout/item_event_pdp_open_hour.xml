<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/spacing_lvl3"
    android:layout_marginBottom="@dimen/spacing_lvl3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_event_pdp_open_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        tools:text="Senin"
        />
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_event_pdp_open_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="10:00 - 18:00"
        />

</LinearLayout>