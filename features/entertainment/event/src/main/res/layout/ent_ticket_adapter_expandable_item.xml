<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/spacing_lvl4">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtTitle_ticket"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:typographyWeight="bold"
        app:typographyType="heading_4"
        tools:text="Wisuda Kelopak-Kelopak Bunga Sakura Platinum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_arrow"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtMulaidari_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintStart_toStartOf="@+id/txtTitle_ticket"
        app:layout_constraintTop_toBottomOf="@id/txtTitle_ticket"
        app:typographyType="small"
        app:typographyWeight="reguler"
        tools:text="Mulai dari" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtPrice_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="small"
        app:typographyWeight="bold"
        tools:text="Rp123.000"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        app:layout_constraintTop_toTopOf="@id/txtMulaidari_ticket"
        app:layout_constraintStart_toEndOf="@id/txtMulaidari_ticket"/>

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ent_keyboard_arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>