<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_lvl3">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/dimen_dp_52"
            android:layout_height="@dimen/dimen_dp_52"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ent_ic_squircle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/spacing_lvl6"
            android:layout_height="@dimen/spacing_lvl6"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_lvl2"
            tools:ignore="VectorDrawableCompat"
            tools:src="@tools:sample/avatars" />

    </FrameLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:typographyType="body_3"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Title" />
</androidx.constraintlayout.widget.ConstraintLayout>