<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Unify_N0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tg_event_checkout_date"
        tools:text="Kam, 18 Des 2018"
        app:typographyWeight="bold"
        app:typographyType="heading_5"
        android:layout_marginTop="@dimen/spacing_lvl6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_event_checkout_image"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tg_event_checkout_name"
        tools:text="Legoland Malaysia in Johor Bahru Admissnistration"
        app:typographyWeight="bold"
        app:typographyType="body_1"
        android:textColor="@color/Unify_N700"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintTop_toBottomOf="@+id/tg_event_checkout_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_event_checkout_image"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tg_event_checkout_packet"
        tools:text="Day 1 - GA Presale Super Sale"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintTop_toBottomOf="@+id/tg_event_checkout_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_event_checkout_image"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl6"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="@dimen/layout_lvl8"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tg_event_checkout_name"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:id="@+id/iv_event_checkout_image"
        android:background="@drawable/background_event_checkout_image"
        />


</androidx.constraintlayout.widget.ConstraintLayout>