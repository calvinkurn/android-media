<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_event_checkout_additonal_package_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ent_checkout_data_tambahan_title"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700"
        />

    <include
        android:id="@+id/item_checkout_event_data_tambahan_package"
        layout="@layout/item_checkout_event_data_tambahan_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tg_event_checkout_additonal_package_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        />

    <include
        android:id="@+id/item_checkout_event_data_tambahan_package_filled"
        layout="@layout/item_checkout_event_data_tambahan_package_filled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tg_event_checkout_additonal_package_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>