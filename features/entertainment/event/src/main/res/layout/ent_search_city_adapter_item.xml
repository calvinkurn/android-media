<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLayer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/spacing_lvl4"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imgCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ent_ic_city_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/loc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unify_space_12"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCity"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        tools:text="Sura" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/loc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Kota"
        android:textColor="@color/Unify_N200"
        android:background="@drawable/bg_text_city_type"
        android:paddingTop="@dimen/spacing_lvl1"
        android:paddingBottom="@dimen/spacing_lvl1"
        android:paddingLeft="@dimen/dimen_dp_6"
        android:paddingRight="@dimen/dimen_dp_6"
        app:typographyType="small"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>