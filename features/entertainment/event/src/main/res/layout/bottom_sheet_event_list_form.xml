<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.SearchBarUnify
        android:id="@+id/event_search_list_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:search_bar_show_icon="false" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_event_bottom_sheet_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/event_search_list_form"
        android:layout_marginTop="@dimen/spacing_lvl2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>