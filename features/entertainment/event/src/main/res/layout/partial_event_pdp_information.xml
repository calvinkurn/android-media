<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@color/Unify_N0"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_event_pdp_detail_lokasi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:text="@string/ent_pdp_information"
            android:textColor="@color/Unify_N700"
            app:typographyType="body_1"
            app:typographyWeight="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_event_pdp_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4" />
    </LinearLayout>

    <include
        android:id="@+id/shimmering"
        layout="@layout/partial_event_pdp_information_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

</FrameLayout>