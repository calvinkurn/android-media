<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/spacing_lvl2"
    card_view:cardCornerRadius="@dimen/spacing_lvl2"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_margin="@dimen/dimen_dp_12"
            android:layout_height="wrap_content"
            android:id="@+id/iv_event_pdp_detail_lokasi"
            android:src="@drawable/ic_event_pdp_detail_lokasi"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_event_pdp_detail_lokasi_map_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_event_pdp_detail_lokasi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Jalan Cihampelas No 211-217 Komplek V, Bandung, Jawa Barat, Indonesia"
            android:layout_marginTop="@dimen/dimen_dp_12"
            android:layout_marginRight="@dimen/dimen_dp_12"
            android:layout_marginLeft="@dimen/dimen_dp_12"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            />
        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_event_pdp_detail_lokasi"
            app:layout_constraintTop_toBottomOf="@+id/tg_event_pdp_detail_lokasi_map_title"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/dimen_dp_12"
            android:layout_marginLeft="@dimen/dimen_dp_12"
            android:text="@string/ent_pdp_see_map"
            app:typographyWeight="bold"
            app:typographyType="body_3"
            android:textColor="@color/Unify_G500"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>