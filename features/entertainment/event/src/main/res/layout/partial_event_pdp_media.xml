<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.tokopedia.entertainment.pdp.widget.WidgetEventPDPCarousel
        android:visibility="invisible"
        android:id="@+id/carousel_event_pdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N100"
        />

    <include
        android:id="@+id/shimmering"
        layout="@layout/partial_event_pdp_media_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

</FrameLayout>