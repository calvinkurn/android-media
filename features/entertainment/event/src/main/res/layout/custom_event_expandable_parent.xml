<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container_event_pdp_expandable"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/event_arrow_expandable"
        app:layout_constraintRight_toRightOf="@+id/event_arrow_expandable"
        android:id="@+id/tg_event_pdp_expand_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:textColor="@color/Unify_N700"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        tools:text="Wisuda Kelopak-Kelopak Bunga Sakura Platinum" />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_event_pdp_expand_title"
        android:id="@+id/tg_event_pdp_expand_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:justificationMode="inter_word"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:text="@string/ent_checkout_price_expand"
        />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintLeft_toRightOf="@+id/tg_event_pdp_expand_price_title"
        app:layout_constraintTop_toBottomOf="@+id/tg_event_pdp_expand_title"
        android:id="@+id/tg_event_pdp_expand_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:justificationMode="inter_word"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="800000"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/event_arrow_expandable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ent_pdp_expand_arrow_down"
        android:layout_marginTop="@dimen/spacing_lvl4"
        />


</androidx.constraintlayout.widget.ConstraintLayout>