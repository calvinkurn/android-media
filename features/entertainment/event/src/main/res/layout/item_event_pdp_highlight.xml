<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    >

    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/iv_event_pdp_highlight"
        android:layout_width="@dimen/spacing_lvl4"
        android:layout_height="@dimen/spacing_lvl4"
        android:src="@drawable/ic_add_photo"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_event_pdp_highlight"
        android:id="@+id/tg_event_pdp_highlight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tiket Terjual"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:layout_gravity="center"
        />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tg_event_pdp_highlight_title"
        android:id="@+id/tg_event_pdp_highlight_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tiket Terjual"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:layout_gravity="center"
        android:textColor="@color/Unify_N700"
        />

    <com.tokopedia.unifyprinciples.Typography
        app:layout_constraintTop_toBottomOf="@+id/tg_event_pdp_highlight_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tg_event_pdp_highlight_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ent_pdp_see_all"
        android:layout_marginLeft="@dimen/spacing_lvl7"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:layout_gravity="center"
        android:textColor="@color/Unify_G500"
        android:visibility="gone"
        />

    <View
        android:visibility="gone"
        android:id="@+id/view_event_pdp_highlight_line"
        app:layout_constraintTop_toBottomOf="@+id/tg_event_pdp_highlight_see_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_N100"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        />

</androidx.constraintlayout.widget.ConstraintLayout>