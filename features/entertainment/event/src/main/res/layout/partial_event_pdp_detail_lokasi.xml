<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@color/Unify_Background"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_event_pdp_detail_lokasi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:text="@string/ent_pdp_detail_lokasi"
            android:textColor="@color/Unify_N700"
            app:typographyType="body_1"
            app:typographyWeight="bold" />

        <com.tokopedia.entertainment.pdp.widget.WidgetEventPDPMaps
            android:id="@+id/widget_event_pdp_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_event_pdp_detail_lokasi_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_N700"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="@string/ent_pdp_detail_lokasi" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_event_pdp_detail_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_event_pdp_detail_lokasi_see_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:text="@string/ent_pdp_see_all"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />
    </LinearLayout>

    <include
        android:id="@+id/shimmering"
        layout="@layout/partial_event_pdp_detail_lokasi_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

</FrameLayout>