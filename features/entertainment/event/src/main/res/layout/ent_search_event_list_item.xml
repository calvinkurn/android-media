<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="20dp">

    <com.tokopedia.design.image.RoundedCornerImageView
        android:id="@+id/imgEvent"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_image_event_search"
        tools:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtTanggalSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        tools:text="14 Jan"
        android:textColor="@color/Tile_T500"
        app:layout_constraintStart_toEndOf="@+id/imgEvent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="small"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtLokasiSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text=" â€¢ Legoland Malaysia in Johor Bahru Admission Ticket"
        app:typographyType="small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTanggalSearch"/>


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtJudulEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Djakarta Warehouse Project 2019"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/imgEvent"
        app:layout_constraintTop_toBottomOf="@+id/txtLokasiSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"/>


</androidx.constraintlayout.widget.ConstraintLayout>