<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tg_event_checkout_summary_packet"
        tools:text="Day 1 - GA Presale Super Sale"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tg_event_checkout_summary_price"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl6"
        android:singleLine="true"
        android:maxEms="8"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tg_event_checkout_summary_amount"
        tools:text="(x1)"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toRightOf="@+id/tg_event_checkout_summary_packet"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/spacing_lvl6"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tg_event_checkout_summary_price"
        tools:text="Rp 1,356,115"
        android:textColor="@color/Unify_N700"
        app:typographyWeight="bold"
        app:typographyType="body_3"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl6"
        />

</androidx.constraintlayout.widget.ConstraintLayout>