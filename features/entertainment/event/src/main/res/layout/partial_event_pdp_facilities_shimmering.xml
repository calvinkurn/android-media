<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_one"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_width="@dimen/dimen_dp_200"
        android:layout_height="@dimen/spacing_lvl4"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        android:background="@drawable/background_event_pdp_shimmering"
        android:layout_weight="1"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_two"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="@dimen/spacing_lvl3"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        android:background="@drawable/background_event_pdp_shimmering"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/ll_first"
        app:layout_constraintTop_toBottomOf="@+id/loader_one"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl7"
            app:loader_corner_radius="0dp"
            app:loader_type="rect"
            android:background="@drawable/background_event_pdp_shimmering"
            android:layout_weight="1"
            />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl7"
            app:loader_corner_radius="0dp"
            app:loader_type="rect"
            android:background="@drawable/background_event_pdp_shimmering"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/ll_first"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl7"
            app:loader_corner_radius="0dp"
            app:loader_type="rect"
            android:background="@drawable/background_event_pdp_shimmering"
            android:layout_weight="1"
            />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl7"
            app:loader_corner_radius="0dp"
            app:loader_type="rect"
            android:background="@drawable/background_event_pdp_shimmering"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>