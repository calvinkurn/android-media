<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_event_checkout_passenger_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ent_event_checkout_passenger_title"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_event_checkout_passenger_desc"
        app:layout_constraintTop_toBottomOf="@+id/tg_event_checkout_passenger_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ent_event_checkout_pessanger_desc"
        app:typographyType="small"
        />

    <com.tokopedia.entertainment.pdp.widget.WidgetEventCheckoutPassenger
        android:id="@+id/widget_event_checkout_pessanger"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tg_event_checkout_passenger_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_event_checkout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/widget_event_checkout_pessanger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:descriptionText="@string/ent_event_checkout_pessanger_ticker"
        app:tickerShapeType="loose"
        app:tickerType="announcement"
        app:closeButtonVisibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>