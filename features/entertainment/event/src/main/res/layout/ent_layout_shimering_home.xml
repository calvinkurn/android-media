<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimering_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical">


    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_130"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"/>

    <GridLayout
        android:id="@+id/loaderUnifyGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:columnCount="5"
        android:orientation="horizontal"
        android:rowCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify1">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

    </GridLayout>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl6"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnifyGrid"/>

    <LinearLayout
        android:id="@+id/loaderUnifyLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify2">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dimen_dp_280"
            android:layout_height="@dimen/dimen_dp_120"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_120"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>