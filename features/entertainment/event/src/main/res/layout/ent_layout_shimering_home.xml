<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimering_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical">


    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_130"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        app:corners="16" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:columnCount="5"
        android:orientation="horizontal"
        android:rowCount="2">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:corners="16" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:corners="16" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:corners="16" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:corners="16" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/dimen_dp_50"
            android:layout_height="@dimen/dimen_dp_50"
            android:layout_margin="@dimen/spacing_lvl3"
            app:corners="16" />

    </GridLayout>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl6"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:corners="16"
        app:width_weight="0.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="@dimen/dimen_dp_280"
            android:layout_height="@dimen/dimen_dp_120"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:corners="16" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_120"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:corners="16" />

    </LinearLayout>
</LinearLayout>