<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_checkout_event_additional_package">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_event_package_additional"
            android:layout_width="@dimen/spacing_lvl4"
            android:layout_height="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_event_checkout_additional_warning" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_event_additional_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:text="@string/ent_checkout_data_tambahan_package"
            app:layout_constraintLeft_toRightOf="@id/img_event_package_additional"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyWeight="bold"
            app:typographyType="body_3"
            android:textColor="@color/Unify_N700" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/spacing_lvl4"
            android:layout_height="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:src="@drawable/ic_event_checkout_edit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>