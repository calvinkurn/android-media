<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_participant_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="4"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        tools:text="Kevin Winarya"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_participant_sub_title"
        app:layout_constraintTop_toBottomOf="@id/tg_participant_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cb_participant"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="4"
        app:typographyType="paragraph_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Unify_NN600"
        tools:text="NIK: 989485948594904"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_participant_redeem_time"
        app:layout_constraintTop_toBottomOf="@id/tg_participant_sub_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cb_participant"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="4"
        app:typographyType="paragraph_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Unify_NN600"
        tools:text="Di redeem pada 01 Nov 2022 10:16"
        android:visibility="gone"
        />
    
    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cb_participant"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_NN100"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tg_participant_redeem_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>