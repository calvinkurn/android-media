<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/Unify_Background">

    <TextView

        android:id="@+id/tv_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Pacific Place"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_location_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2sp"
        android:layout_marginLeft="16dp"
        tools:text="PACIFIC PLACE MALL, 4th Floorâ€¦"
        style="@style/TextView.Small"
        android:textColor="@color/Unify_N700_32"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="50dp"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/iv_map"
        app:layout_constraintTop_toBottomOf="@id/tv_location_name" />

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_see_location"
        app:layout_constraintBottom_toBottomOf="@id/tv_location_address"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_location_name" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location_address" />


</androidx.constraintlayout.widget.ConstraintLayout>