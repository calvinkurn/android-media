<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">


    <com.tokopedia.digital_deals.view.customview.ExpandableTextView
        android:id="@+id/tv_expandable_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="3"
        android:textColor="@color/Unify_N700_44"
        android:textSize="14sp"
        android:textStyle="normal"
        app:animation_duration="300"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/bigcontent" />


    <TextView
        android:id="@+id/seemorebutton_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/expand"
        android:textColor="@color/Unify_G400"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_expandable_description" />


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N75"
        app:layout_constraintTop_toBottomOf="@+id/seemorebutton_description" />

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N50"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <TextView
        android:id="@+id/tv_available_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/terdapat_di"
        android:textColor="@color/Unify_N700_68"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map"
        app:layout_constraintLeft_toRightOf="@+id/iv_map"
        app:layout_constraintTop_toTopOf="@+id/iv_map"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_number_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/Unify_N700_68"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map"
        app:layout_constraintLeft_toRightOf="@id/tv_available_locations"
        app:layout_constraintTop_toTopOf="@+id/iv_map"
        app:layout_constraintVertical_bias="0.5"
        tools:text="3 kota" />


    <ImageView
        android:id="@+id/right_arrow_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:tint="@color/Unify_N150"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_map"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_map"
        app:srcCompat="@drawable/ic_arrow_right_default" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N75"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/iv_map" />

    <TextView
        android:id="@+id/tv_popular"
        style="@style/TextView.Medium.FontMedium.BlackPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintEnd_toStartOf="@+id/number_of_locations"
        tools:text="Popujsd" />

    <TextView
        android:id="@+id/number_of_locations"
        style="@style/TextView.Medium.FontMedium.BlackPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/Unify_N700_32"
        android:layout_marginRight="@dimen/dp_80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/barrier"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintWidth_default="wrap"
        tools:text="(87)"
        android:layout_marginEnd="@dimen/dp_80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/tv_popular"/>

</androidx.constraintlayout.widget.ConstraintLayout>