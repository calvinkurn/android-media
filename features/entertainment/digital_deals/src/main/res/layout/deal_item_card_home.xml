<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_250"
    android:layout_height="150dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="72dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@color/Unify_N50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_brand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_hot_deal"
            style="@style/TextView.Micro11.FontMedium.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/details_header_background"
            android:paddingLeft="16dp"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="16dp"
            android:paddingBottom="@dimen/dp_3"
            android:text="@string/hot_deal"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_brand_name"
            style="@style/TextView.Micro.Black40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintRight_toLeftOf="@+id/iv_wish_list"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bakerzin" />

        <TextView
            android:id="@+id/tv_deal_intro"
            style="@style/TextView.Small.FontMedium.BlackPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:lineSpacingExtra="6dp"
            android:lines="2"
            android:textColor="@color/Unify_N700_96"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            tools:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)" />


        <TextView
            android:id="@+id/tv_available_locations"
            style="@style/TextView.Micro.Black40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/ll_brand"
            app:layout_constraintRight_toLeftOf="@+id/tv_off"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            tools:text="Tersedia di 50 lokasi fgfg vgfg fgf gfgvgfgf fgfg fgf" />

        <TextView
            android:id="@+id/tv_off"
            style="@style/TextView.Micro11.Bold.Red"
            android:layout_width="@dimen/dp_52"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/background_lightgreen_oval"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:textColor="@color/Unify_R400"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toTopOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro"
            tools:text="20% OFF" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/Unify_N75"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_available_locations" />

        <TextView
            android:id="@+id/tv_mrp"
            style="@style/TextView.Micro.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toRightOf="@+id/tv_off"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro"
            app:layout_constraintBottom_toTopOf="@+id/tv_sales_price"
            tools:text="Rp50.000.000" />

        <TextView
            android:id="@+id/tv_sales_price"
            style="@style/TextView.Medium.FontMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:includeFontPadding="false"
            android:paddingVertical="8dp"
            android:textColor="@color/Unify_Y500"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_product"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Rp40.000.000" />

        <ImageView
            android:id="@+id/iv_wish_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:padding="4dp"
            app:layout_constraintRight_toLeftOf="@+id/tv_wish_list"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_wish_list"
            style="@style/TextView.Micro.FontMedium.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_wish_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_wish_list"
            tools:text="5" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toRightOf="@id/tv_wish_list"
            app:layout_constraintTop_toTopOf="@+id/tv_mrp"
            app:srcCompat="@drawable/deals_ic_share_via_card" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

