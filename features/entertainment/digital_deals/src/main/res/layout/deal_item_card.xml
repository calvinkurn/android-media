<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    app:cardCornerRadius="@dimen/card_corner_deals_item"
    app:cardElevation="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8">


        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_width_deal"
            android:scaleType="centerCrop"
            android:src="@color/Unify_N50"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_hot_deal"
            style="@style/TextView.Micro11.FontMedium.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/details_header_background"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_3"
            android:text="@string/hot_deal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_deal_intro"
            style="@style/TextView.Small.FontMedium.BlackPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_product"
            tools:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)" />


        <LinearLayout
            android:id="@+id/ll_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/background_brand_logo"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_brand"
                android:layout_width="@dimen/image_width_brand_deals_card"
                android:layout_height="@dimen/image_width_brand_deals_card"
                android:layout_margin="@dimen/border_width"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_brand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_brand_name"
            style="@style/TextView.Micro.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/ll_brand"
            app:layout_constraintTop_toTopOf="@+id/ll_brand"
            tools:text="Bakerzin" />


        <TextView
            android:id="@+id/tv_available_locations"
            style="@style/TextView.Micro.Black40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            app:layout_constraintLeft_toRightOf="@+id/ll_brand"
            app:layout_constraintRight_toLeftOf="@+id/tv_off"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            tools:text="Tersedia di 50 lokasi fgfg vgfg fgf gfgvgfgf fgfg fgf" />

        <TextView
            android:id="@+id/tv_off"
            style="@style/TextView.Micro11.Bold.Red"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/background_lightgreen_oval"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_available_locations"
            tools:text="20% OFF" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/Unify_N75"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_available_locations" />

        <TextView
            android:id="@+id/tv_mrp"
            style="@style/TextView.Micro.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="end"
            android:textSize="@dimen/sp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="Rp50.000.000" />

        <TextView
            android:id="@+id/tv_sales_price"
            style="@style/TextView.Medium.FontMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:includeFontPadding="false"
            android:textColor="@color/Unify_Y500"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mrp"
            tools:text="Rp40.000.000" />

        <ImageView
            android:id="@+id/iv_wish_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:padding="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mrp" />

        <TextView
            android:id="@+id/tv_wish_list"
            style="@style/TextView.Micro.FontMedium.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/iv_wish_list"
            app:layout_constraintLeft_toRightOf="@+id/iv_wish_list"
            app:layout_constraintTop_toTopOf="@+id/iv_wish_list"
            tools:text="5" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:padding="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toRightOf="@id/tv_wish_list"
            app:layout_constraintTop_toTopOf="@+id/tv_mrp"
            app:srcCompat="@drawable/deals_ic_share_via_card" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

