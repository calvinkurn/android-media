<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="@dimen/card_corner_deals_item"
    app:cardElevation="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">


        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_width_deal"
            android:scaleType="centerCrop"
            android:src="@color/Unify_N50"
            app:layout_constraintTop_toTopOf="parent" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_hot_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/details_header_background"
            android:paddingLeft="16dp"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="16dp"
            android:paddingBottom="@dimen/dp_3"
            android:text="@string/hot_deal"
            android:textColor="@color/Unify_N0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_deal_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_product"
            app:typographyType="display_2"
            tools:text="1 Set Jumbo Bento for 2 persons on Weekdays (Monday - Friday)" />


        <LinearLayout
            android:id="@+id/ll_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_brand_logo"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_deal_intro">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_brand"
                android:layout_width="@dimen/image_width_brand_deals_card"
                android:layout_height="@dimen/image_width_brand_deals_card"
                android:layout_margin="@dimen/border_width"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_brand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintLeft_toRightOf="@+id/ll_brand"
            app:layout_constraintTop_toTopOf="@+id/ll_brand"
            app:typographyType="display_3"
            tools:text="Bakerzin" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_available_locations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintLeft_toRightOf="@+id/ll_brand"
            app:layout_constraintRight_toLeftOf="@+id/tv_off"
            app:layout_constraintTop_toBottomOf="@+id/tv_brand_name"
            app:typographyType="display_3"
            tools:text="Tersedia di 50 lokasi fgfg vgfg fgf gfgvgfgf fgfg fgf" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_off"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/background_lightgreen_oval"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:textColor="@color/Unify_R500"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_available_locations"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="20% OFF" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/Unify_N75"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_available_locations" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:typographyType="small"
            tools:text="Rp50.000.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_sales_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:includeFontPadding="false"
            android:textColor="@color/Unify_Y500"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mrp"
            app:typographyType="display_1"
            app:typographyWeight="bold"
            tools:text="Rp40.000.000" />

        <ImageView
            android:id="@+id/iv_wish_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mrp"
            android:contentDescription="" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_wish_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintBottom_toBottomOf="@+id/iv_wish_list"
            app:layout_constraintLeft_toRightOf="@+id/iv_wish_list"
            app:layout_constraintTop_toTopOf="@+id/iv_wish_list"
            app:typographyType="display_3"
            tools:text="5" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sales_price"
            app:layout_constraintLeft_toRightOf="@id/tv_wish_list"
            app:layout_constraintTop_toTopOf="@+id/tv_mrp"
            app:srcCompat="@drawable/deals_ic_share_via_card"
            android:contentDescription="" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

