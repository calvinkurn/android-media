<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/universal_inbox_bg_gradient_widget">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inbox_rv_widget_meta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <com.tokopedia.unifycomponents.LocalLoad
        android:id="@+id/inbox_local_load_widget_meta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:unify_local_load_title="Konten gagal ditampilkan"
        app:unify_local_load_description="Klik ikon di samping buat coba lagi."
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>