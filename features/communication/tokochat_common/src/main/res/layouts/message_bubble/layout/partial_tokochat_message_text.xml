<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="com.tokopedia.tokochat_common.view.customview.MessageChatLayout">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/message_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="2dp"
        android:padding="4dp"
        android:visibility="gone"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="left|top"
        android:lineSpacingMultiplier="1.1"
        android:textColor="@color/Unify_N700_96"
        android:textIsSelectable="false"
        app:typographyType="body_1"
        tools:ignore="RtlHardcoded"
        tools:text="Mau cari susu yang bisa buat keker dlm satu malam ada gak ya gan?" />

    <LinearLayout
        android:id="@+id/message_status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom|center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/message_check_mark_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp"
            android:contentDescription="@null"
            tools:srcCompat="@drawable/ic_tokochat_check_read_rounded_green" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/message_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/Unify_N700_44"
            android:textIsSelectable="false"
            app:typographyType="body_3"
            tools:text="11:00" />
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/message_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginTop="6dp"
        android:textColor="@color/Unify_N700_44"
        android:textIsSelectable="false"
        android:visibility="gone"
        app:typographyType="body_3"
        tools:text="Pesan ini dibalas oleh sistem"
        tools:visibility="visible" />

</merge>