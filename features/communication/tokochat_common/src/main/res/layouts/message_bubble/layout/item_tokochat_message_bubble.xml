<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_bubble_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.tokochat_common.view.customview.TokoChatBubbleContainerLayout
        android:id="@+id/bubble_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/body_message_container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.tokochat_common.view.customview.TokoChatMessageBubbleLayout
                android:id="@+id/body_message_bubble_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:messageOrientation="LEFT"/>

        </LinearLayout>

    </com.tokopedia.tokochat_common.view.customview.TokoChatBubbleContainerLayout>

</FrameLayout>