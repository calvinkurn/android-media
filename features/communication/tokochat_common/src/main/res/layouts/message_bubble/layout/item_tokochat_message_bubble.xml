<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_msg_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.tokochat_common.view.customview.BubbleContainerLayout
        android:id="@+id/ll_msg_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llRoleUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingTop="@dimen/unify_space_2"
            android:visibility="gone"
            tools:ignore="RtlSymmetry"
            tools:visibility="visible">

            <include layout="@layout/item_tokochat_header_role_user" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_header_info"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/unify_space_4"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_gravity="center_vertical"
                android:contentDescription="Broadcast Icon"
                app:srcCompat="@drawable/ic_topchat_broadcast_grey" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:text="Reply from Broadcast Chatt"
                app:typographyType="body_3"
                app:typographyWeight="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_body_msg_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.tokochat_common.view.customview.MessageBubbleLayout
                android:id="@+id/mb_bubble_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:messageOrientation="LEFT"/>

        </LinearLayout>

    </com.tokopedia.tokochat_common.view.customview.BubbleContainerLayout>
</FrameLayout>