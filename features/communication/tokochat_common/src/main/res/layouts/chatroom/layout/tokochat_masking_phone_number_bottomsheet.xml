<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokochat_tv_masking_phone_number_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tokochat_iv_masking_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        android:text="@string/tokochat_masking_phone_number_title"
        android:textColor="@color/Unify_NN950" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/tokochat_iv_masking_phone_number"
        android:layout_width="280dp"
        android:layout_height="210dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/tokochat_tv_masking_phone_number_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tokochat_tv_masking_phone_number_desc"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokochat_tv_masking_phone_number_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tokochat_iv_masking_phone_number"
        app:layout_constraintBottom_toTopOf="@id/tokochat_btn_masking_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="paragraph_3"
        app:typographyWeight="reguler"
        android:text="@string/tokochat_masking_phone_number_desc"
        android:textColor="@color/Unify_NN600" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/tokochat_btn_masking_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tokochat_tv_masking_phone_number_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:unifyButtonType="main"
        app:unifyButtonSize="medium"
        tools:visibility="visible"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/tokochat_driver_call_button_text"
        android:textColor="@color/Unify_GN500" />

</androidx.constraintlayout.widget.ConstraintLayout>