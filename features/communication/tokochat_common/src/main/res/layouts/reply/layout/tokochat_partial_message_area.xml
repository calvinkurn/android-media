<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingEnd="@dimen/unify_space_12"
    tools:paddingStart="@dimen/spacing_lvl4"
    tools:paddingTop="@dimen/unify_space_8"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <View
        android:id="@+id/view_border_radius"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/unify_space_2"
        android:layout_marginTop="@dimen/tokochat_20dp"
        app:layout_constraintEnd_toEndOf="@+id/new_comment"
        app:layout_constraintStart_toStartOf="@+id/new_comment"
        app:layout_constraintTop_toTopOf="@+id/new_comment" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/send_but"
        android:layout_width="@dimen/spacing_lvl7"
        android:layout_height="@dimen/spacing_lvl7"
        android:background="@drawable/bg_tokochat_send_btn_disabled"
        android:paddingStart="@dimen/tokochat_10dp"
        android:paddingTop="@dimen/tokochat_10dp"
        android:paddingEnd="@dimen/tokochat_9dp"
        android:paddingBottom="@dimen/tokochat_10dp"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_NN300"
        app:icon_name="SEND_TEXT"
        app:layout_constraintBottom_toBottomOf="@+id/new_comment"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_new_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tokochat_6dp"
        android:layout_marginBottom="@dimen/tokochat_14dp"
        android:hint="@string/tokochat_edit_text"
        app:text_field_input_type="text"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minHeight="@dimen/spacing_lvl7"
        android:paddingStart="@dimen/spacing_lvl7"
        android:paddingTop="@dimen/tokochat_10dp"
        android:paddingEnd="@dimen/spacing_lvl8"
        android:textColor="@color/Unify_N700_96"
        android:textColorHint="@color/Unify_N700_32"
        app:layout_constraintBottom_toTopOf="@+id/tp_error_compose"
        app:layout_constraintEnd_toStartOf="@+id/send_but"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@tools:sample/lorem/random" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_error_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:textColor="@color/Unify_RN500"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/tf_new_comment"
        app:layout_constraintStart_toStartOf="@+id/tf_new_comment"
        app:layout_constraintTop_toBottomOf="@+id/tf_new_comment"
        app:typographyType="body_3"
        tools:text="Coba pendekin 123 karakter lagi, ya!"
        tools:visibility="visible" />
</merge>