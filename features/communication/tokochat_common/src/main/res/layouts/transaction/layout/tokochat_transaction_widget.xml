<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ViewStub
        android:id="@+id/tokochat_partial_order_status_viewstub"
        android:inflatedId="@+id/partialOrderStatusViewStub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/partial_order_status_widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ViewStub
        android:id="@+id/tokochat_shimmer_order_status_viewstub"
        android:inflatedId="@+id/shimmerOrderStatusViewStub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/partial_order_status_widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifycomponents.LocalLoad
        android:id="@+id/tokochat_localload_error_transaction_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:unify_local_load_title="@string/tokochat_localload_transaction_widget_title"
        app:unify_local_load_description="@string/tokochat_localload_transaction_widget_desc"/>

</androidx.constraintlayout.widget.ConstraintLayout>