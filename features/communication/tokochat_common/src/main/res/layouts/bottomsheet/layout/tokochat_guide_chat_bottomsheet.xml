<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/tokochat_image_guide_chat"
                android:layout_width="280dp"
                android:layout_height="210dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="24dp"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_subtitle_guide_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tokochat_image_guide_chat"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:typographyType="paragraph_2"
                android:text="@string/tokochat_message_censored_bottomsheet_subtitle"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_desc_guide_chat_number_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tokochat_tv_subtitle_guide_chat"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tokochat_tv_desc_guide_chat_one"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:flow_horizontalBias="0"
                app:typographyType="paragraph_2"
                android:text="@string/tokochat_message_censored_desc_number_one"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_desc_guide_chat_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tokochat_tv_desc_guide_chat_number_one"
                app:layout_constraintLeft_toRightOf="@id/tokochat_tv_desc_guide_chat_number_one"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                app:typographyType="paragraph_2"
                android:text="@string/tokochat_message_censored_desc_one"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_desc_guide_chat_number_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tokochat_tv_desc_guide_chat_one"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tokochat_tv_desc_guide_chat_two"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:typographyType="paragraph_2"
                app:layout_constraintHorizontal_bias="0"
                android:text="@string/tokochat_message_censored_desc_number_two"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_desc_guide_chat_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tokochat_tv_desc_guide_chat_number_two"
                app:layout_constraintLeft_toRightOf="@id/tokochat_tv_desc_guide_chat_number_one"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                app:typographyType="paragraph_2"
                android:text="@string/tokochat_message_censored_desc_two"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_desc_guide_chat_number_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tokochat_tv_desc_guide_chat_two"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tokochat_tv_desc_guide_chat_three"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:typographyType="paragraph_2"
                app:layout_constraintHorizontal_bias="0"
                android:text="@string/tokochat_message_censored_desc_number_three"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_desc_guide_chat_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tokochat_tv_desc_guide_chat_number_three"
                app:layout_constraintLeft_toRightOf="@id/tokochat_tv_desc_guide_chat_number_three"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                app:typographyType="paragraph_2"
                android:text="@string/tokochat_message_censored_desc_three"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_desc_guide_chat_sub_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tokochat_tv_desc_guide_chat_three"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="16dp"
                app:typographyType="paragraph_2"
                android:text="@string/tokochat_message_censored_desc_three_sub_one"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_desc_guide_chat_sub_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tokochat_tv_desc_guide_chat_sub_one"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="16dp"
                app:typographyType="paragraph_2"
                android:text="@string/tokochat_message_censored_desc_three_sub_two"/>

            <View
                android:id="@+id/tokochat_line_guide_chat"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tokochat_tv_desc_guide_chat_sub_two"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tokochat_tv_terms_condition_guide_chat"
                app:layout_constraintVertical_bias="1"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/Unify_NN50"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tokochat_tv_terms_condition_guide_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="22dp"
                android:gravity="center"
                app:typographyType="display_3"
                android:textColor="@color/Unify_NN600"
                tools:text="@string/tokochat_message_censored_terms_condition"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>