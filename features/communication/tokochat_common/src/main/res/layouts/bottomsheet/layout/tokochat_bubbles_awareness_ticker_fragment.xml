<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_tokochat_bubble_awareness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:descriptionText="@string/tokochat_bubbles_awareness_ticker_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_ticker_tokochat_bubble_awareness"
        app:closeButtonVisibility="gone"
        app:tickerType="announcement"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_ticker_tokochat_bubble_awareness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ticker_tokochat_bubble_awareness"
        app:layout_constraintBottom_toTopOf="@id/tv_ticker_tokochat_bubble_awareness"
        app:unify_image_type="rect"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_ticker_tokochat_bubble_awareness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_ticker_tokochat_bubble_awareness"
        app:layout_constraintBottom_toTopOf="@id/tv_ticker_tokochat_bubble_awareness_2"
        app:typographyType="paragraph_2"
        tools:text="@string/tokochat_bubbles_awareness_bottomsheet_desc_3"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_ticker_tokochat_bubble_awareness_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ticker_tokochat_bubble_awareness"
        app:layout_constraintBottom_toBottomOf="parent"
        app:typographyType="paragraph_2"
        tools:text="@string/tokochat_bubbles_awareness_bottomsheet_desc_info_3"/>

</androidx.constraintlayout.widget.ConstraintLayout>