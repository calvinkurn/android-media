<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notifcenter_layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.searchbar.navigation_component.NavToolbar
            android:id="@+id/notifcenter_nav_toolbar"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="?actionBarSize"
            app:contentInsetLeft="@dimen/unify_space_0"
            app:contentInsetStart="@dimen/unify_space_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:toolbarBackButton="back"
            app:toolbarInitialTheme="light"
            tools:layout_height="@dimen/layout_lvl7" />

        <FrameLayout
            android:id="@+id/notifcenter_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/notifcenter_nav_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>