<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl4"
    android:paddingRight="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/lu_icon"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circle" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/lu_title"
        android:layout_width="@dimen/notif_dp_145"
        android:layout_height="@dimen/notif_dp_12"
        android:layout_marginStart="@dimen/notif_dp_10"
        app:corners="@integer/notif_corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/lu_icon"
        app:layout_constraintStart_toEndOf="@+id/lu_icon"
        app:layout_constraintTop_toTopOf="@+id/lu_icon"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/lu_desc"
        android:layout_width="0dp"
        android:layout_height="@dimen/notif_dp_36"
        android:layout_marginStart="@dimen/notif_dp_10"
        android:layout_marginTop="@dimen/notif_dp_12"
        app:corners="@integer/notif_corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lu_icon"
        app:layout_constraintTop_toBottomOf="@+id/lu_title"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>