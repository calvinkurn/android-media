<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/notifcenter_rectangle_top_right"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_pin_top"
        style="@style/BaseNotification_Pin_Icon_Top"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        app:icon_color_light_enable="@color/Unify_YN500"
        app:icon_color_night_enable="@color/Unify_YN500"
        app:icon_enable_state="true"
        app:icon_name="PUSH_PIN_FILLED"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>