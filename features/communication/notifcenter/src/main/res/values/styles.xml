<resources>
    <style name="Tabs.Notification">
        <item name="footerIndicatorHeight">1dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="footerColor">@color/Unify_G500</item>
        <item name="android:textColor">@color/Unify_G500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationMenuItemTextAppearance">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BadgeCounter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/layout_lvl2</item>
        <item name="android:minWidth">@dimen/layout_lvl2</item>
        <item name="android:paddingStart">@dimen/spacing_lvl1</item>
        <item name="android:paddingEnd">@dimen/spacing_lvl1</item>
        <item name="android:background">@drawable/bg_notifcenter_red_dot</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/Unify_Static_White</item>
        <item name="android:visibility">gone</item>
        <item name="typographyType">small</item>
        <item name="typographyWeight">bold</item>
    </style>
</resources>
