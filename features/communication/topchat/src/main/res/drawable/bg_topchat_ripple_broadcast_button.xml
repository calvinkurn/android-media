<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight"> <!-- ripple effect color -->
    <item android:id="@android:id/background">
        <shape android:shape="oval">
            <solid android:color="@color/Unify_YN400" /> <!-- background color -->
        </shape>
    </item>
    <item android:id="@android:id/mask"> <!-- opaque ripple boundaries -->
        <shape android:shape="oval">
            <solid android:color="?android:colorAccent" />
        </shape>
    </item>
</ripple>