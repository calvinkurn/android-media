<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="android.widget.FrameLayout">

    <com.tokopedia.topchat.chatroom.view.custom.ChatMenuAttachmentView
        android:id="@+id/rv_topchat_attachment_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingBottom="16dp"
        android:visibility="gone"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:spanCount="4"
        tools:visibility="visible" />

    <com.tokopedia.topchat.chatroom.view.custom.ChatMenuStickerView
        android:id="@+id/ll_sticker_container"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible" />

</merge>