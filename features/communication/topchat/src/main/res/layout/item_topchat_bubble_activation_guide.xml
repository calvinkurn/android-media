<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/topchat_iv_bubble_activation_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/topchat_tv_bubble_activation_guide_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="paragraph_2"
        app:typographyWeight="reguler"
        android:textColor="@color/Unify_NN950"
        android:layout_marginTop="16dp"
        tools:text="@string/topchat_bubble_activation_guide_1_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topchat_iv_bubble_activation_guide"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/topchat_tv_bubble_activation_guide_desc_sample_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="paragraph_2"
        app:typographyWeight="reguler"
        android:layout_marginTop="2dp"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="@string/topchat_bubble_activation_guide_1_desc_sample_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topchat_tv_bubble_activation_guide_desc"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/topchat_iv_bubble_activation_guide_desc_sample_icon"
        android:layout_width="27dp"
        android:layout_height="23dp"
        app:unify_image_corner_radius="0"
        android:layout_marginStart="2dp"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/topchat_tv_bubble_activation_guide_desc_sample_icon"
        app:layout_constraintTop_toTopOf="@id/topchat_tv_bubble_activation_guide_desc_sample_icon"
        app:layout_constraintBottom_toBottomOf="@id/topchat_tv_bubble_activation_guide_desc_sample_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>