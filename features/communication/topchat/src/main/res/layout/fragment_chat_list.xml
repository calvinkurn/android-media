<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:id="@+id/layout_ticker_ban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.tokopedia.unifycomponents.ticker.Ticker
                    android:id="@+id/ticker_ban_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:closeButtonVisibility="gone"
                    app:tickerType="error"
                    app:titleText="@string/title_topchat_chat_banned_seller"
                    tools:visibility="visible" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_ticker_chat_performance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/Unify_Y100"
                android:visibility="gone">

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/icon_ticker_chat_performance"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="4dp"
                    app:srcCompat="@drawable/ic_book_chat_performance" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_ticker_chat_performance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/icon_ticker_chat_performance"
                    app:layout_constraintBottom_toBottomOf="@id/icon_ticker_chat_performance"
                    app:layout_constraintLeft_toRightOf="@id/icon_ticker_chat_performance"
                    android:layout_marginStart="4dp"
                    android:text="@string/chat_performance_ticker" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_chevron_ticker_chat_performance"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="@id/tv_ticker_chat_performance"
                    app:layout_constraintLeft_toRightOf="@id/tv_ticker_chat_performance"
                    app:layout_constraintRight_toLeftOf="@id/icon_close_ticker_chat_performance"
                    app:layout_constraintBottom_toBottomOf="@id/tv_ticker_chat_performance"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0"
                    app:icon_name="CHEVRON_RIGHT"/>

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/icon_close_ticker_chat_performance"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="@id/icon_chevron_ticker_chat_performance"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/icon_chevron_ticker_chat_performance"
                    android:layout_marginEnd="10dp"
                    app:icon_name="CLOSE"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tokopedia.topchat.chatroom.view.custom.ChatFilterView
            android:id="@+id/cf_chat_list"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_ticker"
            tools:layout_height="70dp"
            tools:visibility="visible" />


        <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cf_chat_list">

            <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_broadcast"
        android:layout_width="@dimen/dp_topchat_56"
        android:layout_height="@dimen/dp_topchat_56"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        android:visibility="gone"
        app:backgroundTint="@color/Unify_Y400"
        app:fabCustomSize="@dimen/dp_topchat_56"
        app:layout_anchorGravity="bottom|center"
        app:maxImageSize="33dp"
        app:srcCompat="@drawable/ic_broadcast_white"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>