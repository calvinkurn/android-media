<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_ban_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:closeButtonVisibility="gone"
                app:tickerType="error"
                app:titleText="@string/title_topchat_chat_banned_seller"
                tools:visibility="visible" />

        </LinearLayout>

        <com.tokopedia.topchat.chatroom.view.custom.ChatFilterView
            android:id="@+id/cf_chat_list"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_ticker"
            tools:layout_height="70dp"
            tools:visibility="visible" />


        <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cf_chat_list">

            <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_fab_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        android:visibility="gone"
        app:fabCustomSize="@dimen/dp_topchat_56"
        app:layout_anchorGravity="bottom|center"
        tools:visibility="visible">
        <View
            android:id="@+id/background_shadow_fab_broadcast"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="@id/background_fab_broadcast"
            app:layout_constraintBottom_toBottomOf="@id/background_fab_broadcast"
            app:layout_constraintLeft_toLeftOf="@id/background_fab_broadcast"
            app:layout_constraintRight_toRightOf="@id/background_fab_broadcast"
            android:background="@drawable/bg_topchat_broadcast_shadow"/>
        <View
            android:id="@+id/background_shadow_label_broadcast"
            android:layout_width="42dp"
            android:layout_height="13dp"
            app:layout_constraintTop_toTopOf="@id/label_new_fab_broadcast"
            app:layout_constraintLeft_toLeftOf="@id/label_new_fab_broadcast"
            app:layout_constraintRight_toRightOf="@id/label_new_fab_broadcast"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_topchat_shadow_broadcast_label"/>
        <View
            android:id="@+id/background_fab_broadcast"
            android:layout_width="57dp"
            android:layout_height="57dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_topchat_ripple_broadcast_button"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iv_fab_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_broadcast_white" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_new_fab_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_fab_broadcast"
            app:labelType="highlight_dark_red"
            android:text="@string/title_topchat_new"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>