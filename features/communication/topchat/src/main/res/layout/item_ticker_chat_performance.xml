<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_ticker_chat_performance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@color/Unify_Y100">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/icon_ticker_chat_performance"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/ic_book_chat_performance" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_ticker_text_chevron"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/icon_ticker_chat_performance"
        app:layout_constraintLeft_toRightOf="@id/icon_ticker_chat_performance"
        app:layout_constraintRight_toLeftOf="@id/icon_close_ticker_chat_performance"
        app:layout_constraintBottom_toBottomOf="@id/icon_ticker_chat_performance"
        android:layout_marginStart="4dp"
        app:layout_constraintHorizontal_weight="9">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_ticker_chat_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/chat_performance_ticker" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_chevron_ticker_chat_performance"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/tv_ticker_chat_performance"
            app:layout_constraintLeft_toRightOf="@id/tv_ticker_chat_performance"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_ticker_chat_performance"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0"
            app:icon_name="CHEVRON_RIGHT"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_close_ticker_chat_performance"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/layout_ticker_text_chevron"
        app:layout_constraintLeft_toRightOf="@id/layout_ticker_text_chevron"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/layout_ticker_text_chevron"
        android:layout_marginEnd="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:icon_name="CLOSE"/>

</androidx.constraintlayout.widget.ConstraintLayout>