<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topchat_chatroom_broadcast_flashsale_see_more_card"
    android:layout_width="104dp"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topchat_chatroom_broadcast_flashsale_see_more_container"
        android:background="@color/cardunify_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/topchat_chatroom_broadcast_flashsale_see_more_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/topchat_chatroom_broadcast_flashsale_see_more_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@string/product_card_compact_see_more_products"
            android:textColor="@color/Unify_GN500"
            app:typographyType="display_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/topchat_chatroom_broadcast_flashsale_see_more_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/product_card_compact_see_more_products"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/topchat_chatroom_broadcast_flashsale_see_more_tv"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_product_action_see_more_arrow_normal_352" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>