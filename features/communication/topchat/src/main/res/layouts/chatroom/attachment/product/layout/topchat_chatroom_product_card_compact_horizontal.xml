<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/topchat_chatroom_product_card_radius"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/topchat_chatroom_iv_product_compact_horizontal"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/topchat_chatroom_tv_product_compact_horizontal_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/topchat_chatroom_iv_product_compact_horizontal"
        app:layout_constraintLeft_toRightOf="@id/topchat_chatroom_iv_product_compact_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:typographyType="paragraph_3"
        tools:text="@tools:sample/lorem/random"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/topchat_chatroom_tv_product_compact_horizontal_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topchat_chatroom_tv_product_compact_horizontal_title"
        app:layout_constraintLeft_toRightOf="@id/topchat_chatroom_iv_product_compact_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Rp250.000"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topchat_chatroom_cl_product_compact_horizontal_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topchat_chatroom_tv_product_compact_horizontal_price"
        app:layout_constraintLeft_toRightOf="@id/topchat_chatroom_iv_product_compact_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/topchat_chatroom_tv_product_compact_horizontal_slash_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/topchat_chatroom_tv_product_compact_horizontal_discount"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyType="small"
            android:textColor="@color/Unify_NN400"
            tools:text="Rp500.000"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/topchat_chatroom_tv_product_compact_horizontal_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/topchat_chatroom_tv_product_compact_horizontal_slash_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyType="small"
            android:textColor="@color/Unify_RN500"
            tools:text="50%"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <LinearLayout
        android:id="@+id/topchat_chatroom_ll_product_compact_horizontal_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topchat_chatroom_cl_product_compact_horizontal_discount"
        app:layout_constraintLeft_toRightOf="@id/topchat_chatroom_iv_product_compact_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/topchat_chatroom_icon_product_compact_horizontal_rating"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:icon_name="STAR_FILLED"
            app:icon_color_light_disabled="@color/Unify_Y300"
            app:icon_color_light_enable="@color/Unify_Y300"
            app:icon_color_night_disabled="@color/Unify_Y300"
            app:icon_color_night_enable="@color/Unify_NN0"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/topchat_chatroom_tv_product_compact_horizontal_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2.5dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyType="small"
            android:textColor="@color/Unify_NN600"
            android:layout_gravity="center_vertical"
            tools:text="4.9"/>

        <View
            android:id="@+id/topchat_chatroom_product_compact_horizontal_separator"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/topchat_chatroom_background_dot_seaprator"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/topchat_chatroom_tv_product_compact_horizontal_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyType="small"
            android:textColor="@color/Unify_NN600"
            android:layout_gravity="center_vertical"
            tools:text="125 rb terjual"/>

    </LinearLayout>

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/topchat_chatroom_tv_product_compact_horizontal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/topchat_chatroom_iv_product_compact_horizontal"
        app:layout_constraintLeft_toLeftOf="@id/topchat_chatroom_iv_product_compact_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/topchat_chatroom_iv_product_compact_horizontal"
        app:layout_constraintRight_toRightOf="@id/topchat_chatroom_iv_product_compact_horizontal"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Stok Habis"/>

</androidx.constraintlayout.widget.ConstraintLayout>