<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/topchat_chatroom_broadcast_iv_status"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/topchat_chatroom_broadcast_tv_status"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@null"
        tools:srcCompat="@drawable/ic_chat_read" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/topchat_chatroom_broadcast_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:typographyType="body_3"
        android:textIsSelectable="false"
        android:textColor="@color/Unify_NN400"
        tools:text="11:00" />

</merge>