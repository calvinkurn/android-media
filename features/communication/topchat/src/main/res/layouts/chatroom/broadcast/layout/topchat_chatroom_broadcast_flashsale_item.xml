<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    android:layout_marginBottom="2dp">

    <View
        android:id="@+id/topchat_chatroom_broadcast_flashsale_dim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_NN50"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.topchat.chatroom.view.custom.broadcast.TopChatRoomBroadcastBaseView
            android:id="@+id/topchat_chatroom_broadcast_flashsale_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/topchat_chatroom_broadcast_flashsale_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topchat_chatroom_broadcast_flashsale_base"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <com.tokopedia.topchat.chatroom.view.custom.broadcast.TopChatRoomBroadcastVoucherView
            android:id="@+id/topchat_chatroom_broadcast_flashsale_voucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topchat_chatroom_broadcast_flashsale_product"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.tokopedia.topchat.chatroom.view.custom.broadcast.TopChatRoomBroadcastStatusView
            android:id="@+id/topchat_chatroom_broadcast_flashsale_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/topchat_chatroom_broadcast_flashsale_voucher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>