<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_banner_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="3dp"
    android:paddingRight="16dp"
    android:paddingBottom="4dp">

    <com.tokopedia.topchat.chatroom.view.custom.broadcast.TopChatRoomBroadcastBannerImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chatcommon_announcment_btn"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/title_chatcommon_check"
        android:textAllCaps="false"
        android:textColor="@color/Unify_NN0"
        android:textStyle="bold" />

</LinearLayout>