<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topchat_chatroom_fl_message_bubble"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.topchat.chatroom.view.custom.BubbleContainerLayout
        android:id="@+id/topchat_chatroom_bcl_message_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llRoleUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:visibility="gone"
            tools:ignore="RtlSymmetry"
            tools:visibility="visible">

            <include layout="@layout/topchat_chatroom_partial_header_role_user" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topchat_chatroom_ll_header_info_message_bubble"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:orientation="horizontal">

            <include layout="@layout/topchat_chatroom_partial_header_info" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topchat_chatroom_ll_container_message_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.topchat.chatroom.view.custom.MessageBubbleLayout
                android:id="@+id/topchat_chatroom_message_bubble_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:messageOrientation="LEFT"/>

        </LinearLayout>

    </com.tokopedia.topchat.chatroom.view.custom.BubbleContainerLayout>
</FrameLayout>