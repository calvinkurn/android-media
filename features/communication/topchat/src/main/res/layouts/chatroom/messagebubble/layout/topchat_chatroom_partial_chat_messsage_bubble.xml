<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="com.tokopedia.topchat.chatroom.view.custom.messagebubble.regular.TopChatRoomMessageBubbleLayout">

    <com.tokopedia.topchat.chatroom.view.custom.message.ReplyBubbleAreaMessage
        android:id="@+id/cl_reply_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="27dp"
        app:layout_constraintBottom_toTopOf="@id/view_border_radius"
        app:layout_constraintEnd_toEndOf="@id/fxChat"
        app:layout_constraintStart_toStartOf="@id/fxChat"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.topchat.chatroom.view.custom.messagebubble.regular.TopChatRoomFlexBoxLayout
        android:id="@+id/fxChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</merge>