<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/unify_space_12"
    android:paddingStart="@dimen/unify_space_16"
    tools:ignore="RtlSymmetry">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_srw_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="@color/Unify_NN950_96"
        app:typographyType="body_2"
        tools:text="Ini stoknya masih ada, Min?" />

    <com.tokopedia.iconunify.IconUnify
        android:layout_width="@dimen/unify_space_24"
        android:layout_height="@dimen/unify_space_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/unify_space_8"
        android:padding="@dimen/unify_space_4"
        app:icon_color_light_enable="@color/Unify_NN950_96"
        app:icon_name="SEND_TEXT" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_srw_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:labelType="general_dark_red"
        app:layout_constraintLeft_toRightOf="@id/tp_srw_title"
        app:layout_constraintTop_toTopOf="@id/tp_srw_title"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="BARU"/>

</androidx.constraintlayout.widget.ConstraintLayout>