<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_typing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/chatcommon_1dp"
        android:includeFontPadding="false"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintLeft_toRightOf="@id/iv_typing"
        app:layout_constraintTop_toTopOf="@id/iv_typing"
        app:layout_constraintBottom_toBottomOf="@id/iv_typing"
        app:typographyType="body_3"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:text="@string/is_typing"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_typing"
        android:layout_width="@dimen/chatcommon_26dp"
        android:layout_height="@dimen/chatcommon_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_typing"
        tools:srcCompat="@drawable/topchat_typing_motion"
        android:visibility="gone"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>