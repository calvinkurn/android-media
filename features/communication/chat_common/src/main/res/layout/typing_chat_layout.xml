<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    android:padding="@dimen/chatcommon_5dp"
    android:layout_marginTop="@dimen/chatcommon_5dp"
    android:layout_marginRight="@dimen/chatcommon_10dp"
    android:layout_marginLeft="@dimen/chatcommon_10dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/image"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:src="@color/Unify_R200"/>

</LinearLayout>