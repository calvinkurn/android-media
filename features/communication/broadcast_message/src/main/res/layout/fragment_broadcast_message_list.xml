<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_background"
            android:layout_margin="@dimen/dp_16"
            android:padding="@dimen/dp_16">

            <ImageView android:id="@+id/icon_bulb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_bm_bulb_oval_broder"
                android:layout_centerVertical="true"/>

            <TextView android:id="@+id/bm_quota"
                style="@style/TextView.Small.BlackSecondary"
                tools:text="@string/template_bm_quota"
                android:layout_toEndOf="@+id/icon_bulb"
                android:layout_toRightOf="@id/icon_bulb"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"/>

            <TextView android:id="@+id/bm_quota_refill"
                style="@style/TextView.Micro.BlackDisabled"
                tools:text="@string/template_bm_quota_refill"
                android:layout_below="@+id/bm_quota"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_alignLeft="@+id/bm_quota"
                android:layout_alignStart="@+id/bm_quota"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</android.support.v4.widget.SwipeRefreshLayout>