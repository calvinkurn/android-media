<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_200"
    android:layout_height="@dimen/dp_80">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/preview_right_bubble_bordered"
        android:id="@+id/attach_product_chat_container"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_6"
        android:padding="@dimen/dp_8">

        <android.support.v7.widget.CardView android:id="@+id/container_product_image"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/attach_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_loading_toped" />

        </android.support.v7.widget.CardView>

        <TextView style="@style/TextView.Small.Bold"
            android:layout_width="0dp"
            android:id="@+id/attach_product_name"
            android:lineSpacingExtra="@dimen/sp_10"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Nama Produk"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/container_product_image"
            app:layout_constraintStart_toEndOf="@+id/container_product_image"
            app:layout_constraintTop_toTopOf="@+id/container_product_image"
            app:layout_constraintBottom_toTopOf="@+id/attach_product_price"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView style="@style/TextView.Small.Bold"
            android:layout_width="0dp"
            android:id="@+id/attach_product_price"
            android:textColor="@color/red_800"
            android:singleLine="true"
            android:lineSpacingExtra="6sp"
            tools:text="Rp 2.099.000"
            app:layout_constraintLeft_toLeftOf="@+id/attach_product_name"
            app:layout_constraintStart_toStartOf="@+id/attach_product_name"
            app:layout_constraintTop_toBottomOf="@+id/attach_product_name"
            app:layout_constraintRight_toRightOf="@+id/attach_product_name"
            app:layout_constraintEnd_toEndOf="@+id/attach_product_name"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="top|end"
        android:background="@drawable/circle_light_grey"
        android:backgroundTint="@color/grey_400"
        app:srcCompat="@drawable/ic_close_white"
        android:padding="@dimen/dp_2"/>

</FrameLayout>