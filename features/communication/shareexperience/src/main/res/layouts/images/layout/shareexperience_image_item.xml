<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/shareex_iv_image_item"
        android:layout_width="144dp"
        android:layout_height="144dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="centerInside"/>

    <View
        android:id="@+id/shareex_border_selected_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/shareex_iv_image_item"
        app:layout_constraintLeft_toLeftOf="@id/shareex_iv_image_item"
        app:layout_constraintRight_toRightOf="@id/shareex_iv_image_item"
        app:layout_constraintBottom_toBottomOf="@id/shareex_iv_image_item"
        android:background="@drawable/shareexperience_green_border"/>
    
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/shareex_icon_checkmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/shareex_iv_image_item"
        app:layout_constraintLeft_toLeftOf="@id/shareex_iv_image_item"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/shareexperience_green_checkmark"/>

</androidx.constraintlayout.widget.ConstraintLayout>