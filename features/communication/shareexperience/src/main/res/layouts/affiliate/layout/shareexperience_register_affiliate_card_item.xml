<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/shareex_iv_register_affiliate_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                tools:src="@tools:sample/avatars"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shareex_tv_register_affiliate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/shareex_iv_register_affiliate_icon"
                app:layout_constraintLeft_toRightOf="@id/shareex_iv_register_affiliate_icon"
                app:layout_constraintRight_toLeftOf="@id/shareex_label_register_affiliate"
                app:layout_constraintBottom_toBottomOf="@id/shareex_iv_register_affiliate_icon"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constrainedWidth="true"
                android:layout_marginStart="6dp"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="@tools:sample/lorem/random"/>

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/shareex_label_register_affiliate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/shareex_tv_register_affiliate_title"
                app:layout_constraintLeft_toRightOf="@id/shareex_tv_register_affiliate_title"
                app:layout_constraintRight_toLeftOf="@id/shareex_icon_register_affiliate_chevron_right"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="8dp"
                app:labelType="highlight_dark_red"
                tools:text="Baru"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shareex_tv_register_affiliate_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/shareex_iv_register_affiliate_icon"
                app:layout_constraintLeft_toLeftOf="@id/shareex_iv_register_affiliate_icon"
                app:layout_constraintRight_toLeftOf="@id/shareex_icon_register_affiliate_chevron_right"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:typographyType="display_3"
                tools:text="Daftar dan raih komisi Rp16.000/barang terjual dengan bagikan link ini."/>

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/shareex_icon_register_affiliate_chevron_right"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="@id/shareex_iv_register_affiliate_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/shareex_tv_register_affiliate_desc"
                android:layout_marginEnd="8dp"
                app:icon_name="CHEVRON_RIGHT"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</androidx.constraintlayout.widget.ConstraintLayout>