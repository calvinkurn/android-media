<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/shareex_iv_image_thumbnail_link"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/shareex_iv_image_thumbnail_link"
        app:layout_constraintLeft_toLeftOf="@id/shareex_iv_image_thumbnail_link"
        app:layout_constraintRight_toRightOf="@id/shareex_iv_image_thumbnail_link"
        app:layout_constraintBottom_toBottomOf="@id/shareex_iv_image_thumbnail_link"
        android:background="@drawable/shareexperience_gray_border"/>
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shareex_tv_title_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/shareex_iv_image_thumbnail_link"
        app:layout_constraintLeft_toRightOf="@id/shareex_iv_image_thumbnail_link"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shareex_tv_commision_link"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="12dp"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Samsung Official Store"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shareex_tv_commision_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shareex_tv_title_link"
        app:layout_constraintLeft_toLeftOf="@id/shareex_tv_title_link"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shareex_tv_link"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constrainedWidth="true"
        app:typographyType="display_3"
        android:visibility="gone"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Komisi hingga 10% / barang terjual"
        tools:visibility="visible"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shareex_tv_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shareex_tv_commision_link"
        app:layout_constraintLeft_toLeftOf="@id/shareex_tv_title_link"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/shareex_iv_image_thumbnail_link"
        app:typographyType="display_3"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="tokopedia.link"/>

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/shareex_label_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shareex_iv_image_thumbnail_link"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="14dp"
        app:labelType="highlight_light_green"
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone"
        tools:text="Komisi Ekstra"
        tools:visibility="visible"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shareex_tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/shareex_label_link"
        app:layout_constraintLeft_toRightOf="@id/shareex_label_link"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/shareex_label_link"
        android:layout_marginStart="8dp"
        app:typographyType="display_3"
        android:maxLines="1"
        android:ellipsize="end"
        android:visibility="gone"
        tools:text="Hingga 31 Des 2022"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>