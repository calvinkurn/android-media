<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shareex_tv_bottomsheet_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyType="display_2"
        android:text="Mau kasih liat foto yang mana?"
        tools:text="Mau kasih liat foto yang mana?"/>

    <ViewStub
        android:id="@+id/shareex_vs_chip"
        android:inflatedId="@+id/shareex_layout_rv_chip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/shareex_tv_bottomsheet_subtitle"
        android:layout="@layout/shareexperience_chips"
        android:layout_marginTop="8dp"/>

    <ViewStub
        android:id="@+id/shareex_vs_carousel_image"
        android:inflatedId="@+id/shareex_layout_rv_carousel_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/shareex_tv_bottomsheet_subtitle"
        android:layout="@layout/shareexperience_chips"
        android:layout_marginTop="18dp"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/shareex_image_chip_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="shareex_vs_chip,shareex_vs_carousel_image"/>

    <com.tokopedia.shareexperience.ui.view.ShareExLinkView
        android:id="@+id/shareexperience_view_share_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shareex_image_chip_barrier"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/shareexperience_view_share_link"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_NN50"/>

</androidx.constraintlayout.widget.ConstraintLayout>