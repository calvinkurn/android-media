<?xml version="1.0" encoding="utf-8"?>
<!--include this directly-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widget_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_16">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ovo_premier_5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/sp_4"
            android:text="@string/aplikasi_ovo"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_green_curved_corners"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/sp_11"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/liht_sel"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</android.support.v7.widget.CardView>
