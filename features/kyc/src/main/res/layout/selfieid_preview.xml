<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                layout="@layout/kyc_selfie_intro" />

            <LinearLayout
                android:id="@+id/selfieid_preview_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2d263b">

                    <ImageView
                        android:id="@+id/selfieid_img"
                        android:layout_width="201dp"
                        android:layout_height="260dp"
                        android:layout_gravity="center"
                        android:scaleType="center"
                        android:src="@drawable/ovo_premier_verifikasi_gagal"/>
                </FrameLayout>

                <Button
                    android:id="@+id/use_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_100"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="@drawable/btn_bg_rounded_corners"
                    android:text="@string/gnkn"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/retake_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:textAllCaps="true"
                    android:text="@string/ulng"
                    android:background="@color/white"
                    android:textColor="#06b3ba"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

    <include
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>
</RelativeLayout>