<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_40"
                android:src="@drawable/art_graphic_sand_clock" />

            <TextView
                android:id="@+id/txtv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="6sp"
                android:text="@string/inprc_ttl"
                android:textColor="@color/clr_4c2a86"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txtv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="@string/inprc_desc"
                android:textColor="@color/clr_2d263b"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/txtv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtv_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_32"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/sp_6"
                android:text="@string/inprc_ttl1"
                android:textColor="@color/clr_4c2a86"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/txtv_care_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/ovo_ccno"
                android:textColor="@color/clr_2d263b"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/txtv_care_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_care_no"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/sp_8"
                android:text="@string/ovo_cctiming"
                android:textColor="@color/pin_normal"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_care_timings"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_60"
                android:paddingRight="@dimen/dp_10"
                android:layout_alignParentLeft="true"
                android:src="@drawable/call" />

            <ImageView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_care_timings"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_36"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_60"
                android:src="@drawable/email" />

            <Button
                android:id="@+id/back_to_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/call"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_36"
                android:background="@drawable/btn_bg_rounded_corners"
                android:gravity="center"
                android:text="@string/bck_toko"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </ScrollView>

    <include
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>
</RelativeLayout>
