<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_id_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_260"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/retake_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_id_img"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/ulng_fto"
                android:textColor="@color/clr_06b3ba"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/txtv_select_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/retake_photo"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_30"
                android:text="@string/slct_id_typ"
                android:textColor="@color/clr_6b767e"
                android:textSize="@dimen/sp_16" />

            <RadioGroup
                android:id="@+id/id_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv_select_id"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/KTP_WNI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:checked="true"
                    android:text="@string/ktpwni"
                    android:textColor="@color/clr_2d263b"
                    android:textSize="@dimen/sp_14" />

                <RadioButton
                    android:id="@+id/passport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/psprt"
                    android:textColor="@color/clr_2d263b"
                    android:textSize="@dimen/sp_14" />
            </RadioGroup>

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/wrapper_number_ktp"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_radio_group"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_30"
                android:clickable="false">

                <EditText
                    android:id="@+id/edtxt_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="01234567890"
                    android:hint="@string/nmr_ktp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/font_black_primary_70"
                    android:textSize="@dimen/sp_16" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/wrapper_name"
                style="@style/HintTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wrapper_number_ktp"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_56"
                android:layout_marginRight="@dimen/dp_30"
                android:clickable="false">

                <EditText
                    android:id="@+id/edtxt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nama_hnt"
                    android:inputType="textAutoComplete"
                    android:singleLine="true"
                    android:textColor="@color/font_black_primary_70"
                    android:textSize="@dimen/sp_16" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <Button
                android:id="@+id/confirmation_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wrapper_name"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_52"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_50"
                android:background="@drawable/btn_bg_rounded_corners"
                android:gravity="center"
                android:text="@string/cnfrm"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>
    </ScrollView>

    <include
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>
</RelativeLayout>
