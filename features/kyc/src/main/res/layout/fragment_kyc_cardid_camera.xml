<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/hc_camera_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera"
            android:layout_width="@dimen/dp_340"
            android:layout_height="@dimen/dp_220"
            android:layout_gravity="center"
            android:keepScreenOn="true"
            app:cameraGestureLongTap="none"
            app:cameraGesturePinch="zoom"
            app:cameraGestureScrollHorizontal="none"
            app:cameraGestureScrollVertical="none"
            app:cameraGestureTap="autoFocus"
            app:cameraGrid="off"
            app:cameraFlash="off"
            app:cameraPlaySounds="true"
            app:cameraAudio="off"
            app:cameraHdr="off"
            app:cameraMode="picture" />

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_image_captured"
        android:layout_width="340dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <com.tokopedia.kyc.view.widget.RectangleOverlayView
        android:id="@+id/cicleOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fg_color="@color/kyc_hc_dms_black_99"
        app:inset_distance="20dp"
        app:outline_img="@drawable/img_frame_id_kyc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/button_cancel"
            android:layout_width="@dimen/unify_space_24"
            android:layout_height="@dimen/unify_space_24"
            android:layout_alignParentStart="true"
            android:visibility="gone"
            android:layout_marginStart="@dimen/unify_space_16"
            app:icon_color_light_disabled="@color/Unify_Static_White"
            app:icon_color_light_enable="@color/Unify_Static_White"
            app:icon_color_night_disabled="@color/Unify_Static_White"
            app:icon_color_night_enable="@color/Unify_Static_White"
            app:icon_name="CLOSE" />


        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_3"
            android:id="@+id/desc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/kyc_hc_dms_text_shadow"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginTop="@dimen/unify_space_48"
            android:textColor="@color/Unify_Static_White"
            android:gravity="center_horizontal"
            android:text="@string/kyc_foto_ktp_wni"
            />

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/kyc_hc_dms_text_shadow"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginTop="@dimen/unify_space_16"
            android:textColor="@color/Unify_Static_White"
            android:layout_below="@+id/desc_1"
            android:gravity="center_horizontal"
            android:text="@string/kyc_pstkn_info"
            />

        <include
            layout="@layout/kyc_camera_action_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</FrameLayout>
