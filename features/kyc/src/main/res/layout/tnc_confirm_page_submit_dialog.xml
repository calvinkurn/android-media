<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30">
    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        android:layout_centerHorizontal="true"
        android:textColor="@color/clr_f531353b"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textStyle="bold"
        android:id="@+id/heading"
        android:gravity="center_horizontal"
        android:text="@string/prhtn"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/clr_ae31353b"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/heading"
        android:lineSpacingExtra="@dimen/sp_6"
        android:id="@+id/description"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/psktn_sma"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/description"
        android:textColor="@color/clr_06b3ba"
        android:gravity="center"
        android:id="@+id/back_btn"
        android:layout_marginLeft="20dp"
        android:background="@color/transparent"
        android:text="@string/kmbli"
        android:layout_marginBottom="24dp"
        />
    <Button
        android:layout_alignParentRight="true"
        android:id="@+id/continue_btn"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/description"
        android:text="@string/lnjktn"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/btn_bg_rounded_corners"
        android:layout_marginBottom="24dp"
        />
</RelativeLayout>
