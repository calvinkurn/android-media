<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30">
    <TextView
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="#f531353b"
        android:letterSpacing="-0.01"
        android:lineSpacingExtra="6sp"
        android:textStyle="bold"
        android:id="@+id/heading"
        android:gravity="center_horizontal"
        android:text="@string/prhtn"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ae31353b"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/heading"
        android:lineSpacingExtra="6sp"
        android:id="@+id/description"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:text="@string/psktn_sma"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_below="@+id/description"
        android:textColor="#06b3ba"
        android:gravity="center"
        android:id="@+id/back_btn"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@color/transparent"
        android:text="@string/kmbli"
        android:layout_marginBottom="@dimen/dp_24"
        />
    <Button
        android:layout_alignParentRight="true"
        android:id="@+id/continue_btn"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_below="@+id/description"
        android:text="@string/lnjktn"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:background="@drawable/btn_bg_rounded_corners"
        android:layout_marginBottom="@dimen/dp_24"
        />
</RelativeLayout>