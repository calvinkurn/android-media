<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/selfieid_intro_container"
    android:layout_marginRight="@dimen/dp_30"
    android:layout_marginLeft="@dimen/dp_30">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/sp_8"
        android:text="@string/slfewth_ktppsprt"
        android:textColor="@color/clr_4c2a86"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/sp_6"
        android:text="@string/mksur_fcovl"
        android:textColor="@color/clr_2d263b"
        android:textSize="14sp" />

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        app:remoteFileName="img_selfie_id.webp" />

    <Button
        android:id="@+id/selfieid_intro_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_bg_rounded_corners"
        android:gravity="center"
        android:text="@string/oke"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginBottom="@dimen/dp_36"/>
</LinearLayout>
