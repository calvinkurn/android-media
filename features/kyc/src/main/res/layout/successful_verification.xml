<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ovo_premier_verifikasi_sukses" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_36"
                android:gravity="center_horizontal"
                android:text="@string/hore_kamu"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="@dimen/sp_4"
                android:text="@string/satny_nkmt"
                android:textColor="@color/light_disabled"
                android:textSize="@dimen/sp_14" />

            <TextView
                style="@style/TextView.CheckList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="@dimen/sp_4"
                android:text="@string/bts_sld"
                android:textColor="@color/light_disabled"
                android:textSize="@dimen/sp_14" />

            <TextView
                style="@style/TextView.CheckList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="4sp"
                android:text="@string/tnsfr_k_antr"
                android:textColor="@color/light_disabled"
                android:textSize="@dimen/sp_14" />

            <TextView
                style="@style/TextView.CheckList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:lineSpacingExtra="@dimen/sp_4"
                android:text="@string/bbs_bia"
                android:textColor="@color/light_disabled"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/continue_shopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/btn_bg_green_curved_corners"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="@string/mli_tnskn"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/branding_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>
</RelativeLayout>
