<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_border"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginBottom="@dimen/csat_dp_10"
    android:layout_marginLeft="@dimen/csat_dp_5"
    android:layout_marginRight="@dimen/csat_dp_5"
    android:layout_marginTop="@dimen/csat_dp_10"
    android:background="@color/Unify_G500"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_inside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/csat_dp_0.1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/filter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/Unify_N0"
            tools:text="Semua\nTidak" />

    </LinearLayout>

</LinearLayout>