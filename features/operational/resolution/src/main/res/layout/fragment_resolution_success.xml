<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResolutionSuccessActivity">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_success_reso"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/unify_space_24"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="@dimen/unify_space_32"
        android:layout_marginHorizontal="@dimen/unify_space_64"
        app:layout_constraintBottom_toTopOf="@id/tv_title"
        android:src="@drawable/img_success_reso"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_success_reso"
        android:textColor="@color/Unify_NN950"
        android:layout_marginHorizontal="@dimen/unify_space_48"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_success_reso"
        app:layout_constraintBottom_toTopOf="@id/tv_description"
        android:layout_marginBottom="@dimen/unify_space_8"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_go_to_detail"
        android:layout_marginHorizontal="@dimen/unify_space_48"
        app:typographyType="paragraph_2"
        android:textColor="@color/Unify_NN600"
        android:textAlignment="center"
        android:text="@string/description_success_reso"
        android:layout_marginBottom="@dimen/unify_space_24"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>
    
    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_go_to_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:layout_constraintBottom_toTopOf="@id/btn_go_to_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/title_btn_detail"
        android:layout_marginHorizontal="@dimen/unify_space_48"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_go_to_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unifyButtonVariant="text"
        android:layout_marginTop="@dimen/unify_space_8"
        app:layout_constraintTop_toBottomOf="@id/btn_go_to_detail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/title_btn_home"
        android:layout_marginHorizontal="@dimen/unify_space_48"/>

</androidx.constraintlayout.widget.ConstraintLayout>