<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.contactus">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.tokopedia.contactus.home.view.ContactUsHomeActivity"
            android:exported="true"
            android:label="@string/contact_us_title_home"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" >

            <intent-filter android:autoVerify="true"
                android:label="deeplink second activity">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_contactus"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.tokopedia.contactus.home.view.BuyerPurchaseListActivity"
            android:exported="true"
            android:label="@string/invoice_list_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name="com.tokopedia.contactus.orderquery.view.OrderQueryTicketActivity"
            android:exported="true"
            android:label="@string/order_query_ticket_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name="com.tokopedia.contactus.orderquery.view.QueryTicketDetailActivity"
            android:exported="true"
            android:label="@string/order_query_ticket_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name="com.tokopedia.contactus.orderquery.view.SubmitTicketActivity"
            android:exported="true"
            android:label="@string/submit_ticket_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.tokopedia.contactus.orderquery.view.PopularFiveArticleActivity"
            android:exported="true"
            android:label="@string/contact_us_title_home"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.tokopedia.contactus.createticket.activity.ContactUsActivity"
            android:hardwareAccelerated="true"
            android:label="@string/contact_us_title_home"
            android:screenOrientation="portrait" >

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_contact_us"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.contactus.createticket.activity.ContactUsCreateTicketActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".inboxticket2.view.activity.InboxListActivity"
            android:exported="true"
            android:label="@string/inbox"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" >

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_customercare"
                    android:path="@string/path_inbox_list"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".inboxticket2.view.activity.InboxDetailActivity"
            android:exported="true"
            android:label="@string/detail_kendala"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_customercare"
                    android:pathPattern="@string/path_ticket_detail"/>
            </intent-filter>
        </activity>
        <activity android:name="com.tokopedia.contactus.inboxticket2.view.activity.ProvideRatingActivity"
            android:exported="true"
            android:label="@string/survey_layanan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

    </application>
</manifest>