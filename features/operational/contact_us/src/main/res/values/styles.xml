<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AttachProductToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AttachProductToolbarSubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tabs.ContactUs" parent="Tabs">
        <item name="footerPadding">@dimen/dp_15</item>
        <item name="topPadding">@dimen/dp_12</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">5dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="selectedBold">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tkpd_main_green</item>
        <item name="android:textSize">@dimen/font_micro</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CoolDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>