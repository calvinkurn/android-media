<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_os_illustration"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/os_illustration"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_service_priorities_officialstore"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        android:text="@string/tv_service_priorities_officialstore"
        android:textColor="@color/contact_us_dms_detail_text"
        app:typographyWeight="bold"
        app:typographyType="display_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_os_illustration" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_service_priorities_officialstore_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="6sp"
        android:text="@string/service_priorities_officialstore_desc"
        app:typographyType="display_2"
        android:textColor="@color/contact_us_dms_detail_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_service_priorities_officialstore" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_close"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_button_state"
        android:gravity="center"
        android:text="Tutup"
        android:textColor="@color/Unify_NN0"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_service_priorities_officialstore_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>