<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_4"
        android:gravity="center_vertical"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextAppearance="?subtitleTextAppearance"
        app:titleTextAppearance="?titleTextAppearance">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inbox_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_12"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.tokopedia.contactus.inboxticket2.view.customview.CustomEditText
                android:id="@+id/custom_search"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/transparent"
                android:hint="Cari..."
                android:textColor="@color/black_70"
                android:textColorHint="@color/contact_us_black_38"
                android:textSize="@dimen/sp_16"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/close_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/close_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close_default" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="?attr/actionBarSize">


        <com.tkpd.remoteresourcerequest.view.DeferredImageView
            android:id="@+id/iv_no_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:remoteFileName="filter_no_message_found.png"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_greeting"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:typographyType="heading_2"
            app:typographyWeight="bold"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:textColor="@color/contact_us_grey_n_700_96"
            android:visibility="gone"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_no_ticket"
            tools:text="Halo, Fidelia Zheng!"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_no_ticket"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:typographyType="body_2"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_goneMarginTop="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="center_horizontal"
            android:text="@string/contact_us_display_a_problem_report_here"
            android:visibility="gone"
            android:textColor="@color/contact_us_text_field_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_greeting" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_raise_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/rounded_rectangle_greenbutton_solid"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_50"
            android:paddingRight="@dimen/dp_50"
            android:paddingTop="@dimen/dp_12"
            android:text="@string/contact_us_show_all_ticket"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_no_ticket" />

        <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
            android:id="@+id/rv_email_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            tools:listitem="@layout/layout_item_ticket" />

        <com.tokopedia.contactus.inboxticket2.view.customview.CustomChatWidgetView
            android:id="@+id/chat_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1"
            tools:visibility="visible" />

        <View
            android:id="@+id/chat_widget_notification_indicator"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:visibility="gone"
            android:background="@drawable/rounded_chat_widget_notifiaction_red"
            app:layout_constraintTop_toTopOf="@id/chat_widget"
            app:layout_constraintRight_toRightOf="@id/chat_widget"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@color/green_text"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/dp_22"
        app:cardElevation="@dimen/dp_4"
        app:contentPaddingBottom="@dimen/dp_8"
        app:contentPaddingLeft="@dimen/dp_16"
        app:contentPaddingRight="@dimen/dp_16"
        app:contentPaddingTop="@dimen/dp_8"
        app:layout_behavior="com.tokopedia.contactus.inboxticket2.view.behaviour.QuickHideBehaviour">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/btn_filter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_6"
            app:typographyWeight="bold"
            android:gravity="center"
            android:text="@string/filter"
            android:textColor="@color/contact_us_text_field_color" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>