<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/Unify_NN0"
    android:layout_height="182dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        android:text="@string/_close_this_complaint"
        android:textColor="@color/contact_us_dms_detail_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_discription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/close_complain_message"
        android:textColor="@color/contact_us_dms_complain_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_no_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_rectangle_green_border"
        android:gravity="center"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="@string/inbox_cancel"
        android:textColor="@color/contact_us_dms_complain_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_yes_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_discription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_yes_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_rectangle_greenbutton_solid"
        android:gravity="center"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="@string/yes_close"
        android:textColor="@color/Unify_NN0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_no_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_discription" />

</androidx.constraintlayout.widget.ConstraintLayout>