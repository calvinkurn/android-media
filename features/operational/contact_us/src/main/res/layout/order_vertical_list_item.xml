<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/default_card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/med_dp"
            android:textColor="@color/green_nob"
            android:textSize="@dimen/font_micro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="IVR/20171010/XVII/X/24225245" />

        <TextView
            android:id="@+id/txt_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/black_55"
            android:textSize="@dimen/font_micro"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_order_id"
            tools:text="10 Oct 2017" />

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/card_iv_size"
            android:layout_height="@dimen/card_iv_size"
            android:layout_marginTop="@dimen/margin_ms"
            android:background="@drawable/grey_rectangle_border"
            app:layout_constraintStart_toStartOf="@+id/txt_order_id"
            app:layout_constraintTop_toBottomOf="@+id/txt_order_id"
            app:srcCompat="@drawable/qc_launcher2" />

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/font_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/txt_more_item"
            app:layout_constraintTop_toTopOf="@+id/img_product"
            tools:text="Helm " />

        <TextView
            android:id="@+id/txt_more_item"
            android:layout_width="98dp"
            android:layout_height="19dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black_55"
            android:textSize="@dimen/font_micro"
            app:layout_constraintStart_toEndOf="@+id/img_product"
            app:layout_constraintTop_toBottomOf="@+id/txt_product_name"
            tools:text="+4 barang lainnya" />

        <TextView
            android:id="@+id/txt_invalid_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:background="@drawable/transparent_green_border"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_vms"
            android:paddingEnd="@dimen/padding_med"
            android:paddingRight="@dimen/padding_med"
            android:paddingStart="@dimen/padding_med"
            android:paddingTop="@dimen/margin_vms"
            android:textColor="@color/yellow_text"
            android:textSize="@dimen/font_tiny"
            app:layout_constraintStart_toStartOf="@+id/img_product"
            app:layout_constraintTop_toBottomOf="@+id/img_product"
            tools:text="Kode resi pengiriman tidak valid" />

        <ImageView
            android:id="@+id/img_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:layout_marginTop="@dimen/margin_default"
            android:background="@color/grey_100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_invalid_msg" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_margin_medsmall"
            android:text="Total:"
            android:textColor="@color/black_55"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_invalid_msg"
            app:layout_constraintTop_toBottomOf="@+id/img_divider" />

        <TextView
            android:id="@+id/txt_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginStart="@dimen/margin_ms"
            android:layout_marginTop="@dimen/new_margin_medsmall"
            android:textColor="@color/red_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_title"
            app:layout_constraintTop_toBottomOf="@+id/img_divider"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Rp 10.000.000" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>