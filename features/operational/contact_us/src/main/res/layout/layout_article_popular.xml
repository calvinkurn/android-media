<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_default"
        android:paddingStart="@dimen/margin_default">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_margin_sm"
            android:fontFamily="sans-serif-medium"
            android:textColor="#b3000000"
            android:textSize="@dimen/font_title"
            android:textStyle="normal"
            tools:text="Artikel Populer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black3_text"
            android:textSize="@dimen/font_small"
            tools:text="Apakah saya tetap dikenakan biaya layanan jika pembayaran dengan kartu kredit saya dibatalkan?" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:background="@color/grey_300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black3_text"
            android:textSize="@dimen/font_small"
            tools:text="JNE cabang mana saja yang menerima pembayaran Tokopedia?" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:background="@color/grey_300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black3_text"
            android:textSize="@dimen/font_small"
            tools:text="Saldo Tokopedia direview" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:background="@color/grey_300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black3_text"
            android:textSize="@dimen/font_small"
            tools:text="Bagaimana cara melakukan pembayaran melalui transfer bank?" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:background="@color/grey_300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black3_text"
            android:textSize="@dimen/font_small"
            tools:text="Bagaimana cara melakukan pembayaran melalui transfer bank?" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:background="@color/grey_300" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:textColor="@color/green_nob"
            android:textSize="@dimen/font_small"
            tools:text="Lihat Selengkapnya" />
    </LinearLayout>
</android.support.v7.widget.CardView>