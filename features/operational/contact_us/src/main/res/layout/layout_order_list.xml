<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_default"
    app:cardElevation="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:background="@color/grey_300"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/new_margin_sm"
            android:textColor="@color/black"
            android:textSize="@dimen/font_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            tools:text="Riwayat Transaksi" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_ms"
            android:textColor="@color/grey2_text"
            android:textSize="@dimen/font_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            tools:text="Laporkan kendala transaksi di Tokopedia" />

        <android.support.v4.view.ViewPager
            android:id="@+id/order_list_viewpager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/new_margin_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            tools:layout_editor_absoluteY="172dp" />

        <com.tkpd.library.viewpagerindicator.CirclePageIndicator
            android:id="@+id/pager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="28dp"
            android:padding="@dimen/divider_height_thin"
            app:centered="true"
            app:fillColor="@color/green_nob"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/order_list_viewpager"
            app:pageColor="@color/grey_400"
            app:radius="@dimen/margin_vms"
            app:strokeColor="@color/grey_400" />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="@dimen/new_margin_sm"
            android:textColor="@color/green_nob"
            android:textSize="@dimen/font_small"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_list_viewpager"
            tools:text="Lihat Selengkapnya" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>