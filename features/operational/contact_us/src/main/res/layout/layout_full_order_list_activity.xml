<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_4"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:subtitleTextAppearance="?subtitleTextAppearance"
        app:titleTextAppearance="?titleTextAppearance" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/dp_16"
        android:text="Pilih Transaksi"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/font_medium"
        android:layout_marginLeft="@dimen/margin_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_ms"
        android:text="Laporkan kendala seputar transaksi di Tokopedia"
        android:textColor="@color/grey2_text"
        android:textSize="@dimen/font_small"/>

    <com.tokopedia.design.component.Tabs
        android:id="@+id/tab"
        app:tabType="secondary"
        android:padding="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@style/Tabs.Secondary"/>

    <com.tokopedia.abstraction.base.view.widget.TouchViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_pager_list"
        android:paddingTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>