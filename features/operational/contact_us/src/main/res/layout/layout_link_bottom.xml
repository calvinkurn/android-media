    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Theme.White.Background"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/masih_butuh_bantuan"
        android:textColor="@color/black3_text"
        android:textSize="@dimen/sp_14" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_hyper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/margin_padding_small"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:layout_marginTop="@dimen/dp_16"
