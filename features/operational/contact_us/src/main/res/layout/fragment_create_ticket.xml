<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tkpd_bg_color"
    android:paddingTop="@dimen/padding_small">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_small"
            android:visibility="invisible"
            tools:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/title_problem_category"
                app:typographyWeight="bold"
                app:typographyType="display_2"/>

            <EditText
                android:id="@+id/main_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/white"
                android:enabled="false"
                android:gravity="top"
                android:padding="10dp"
                android:textSize="14sp"
                tools:text="Saya pasien > Walalala" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_category"
                android:padding="10dp"
                android:text="@string/title_name"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                tools:visibility="gone" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/white"
                android:gravity="top"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:textSize="14sp"
                tools:visibility="gone" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:padding="10dp"
                android:text="@string/title_email"
                app:typographyWeight="bold"
                app:typographyType="display_2"
                tools:visibility="gone" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/white"
                android:gravity="top"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding_small"
                android:textSize="14sp"
                tools:visibility="gone" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/detail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:padding="10dp"
                android:text="@string/title_problem_detail"
                app:typographyType="display_2"
                app:typographyWeight="bold"/>

            <EditText
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/white"
                android:gravity="top"
                android:minLines="5"
                android:padding="@dimen/padding_small"
                android:textSize="14sp" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail"
                android:padding="10dp"
                android:text="@string/title_phone_optional"
                app:typographyWeight="bold"
                app:typographyType="display_2"
                />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_text"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@android:color/white"
                android:gravity="top"
                android:inputType="phone"
                android:padding="@dimen/padding_small"
                android:textSize="14sp" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/attachment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_number"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/title_attachment"
                app:typographyType="display_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/attachment_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/attachment_text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:typographyType="display_2"
                android:textStyle="italic"
                android:visibility="gone"
                tools:text="Mohon lampirkan bukti resi pengiriman Anda."
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/attachment_note"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:background="@color/white"
                android:scrollbars="horizontal" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>