<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_4"
        android:gravity="center_vertical"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="@dimen/dp_0"
        app:contentInsetStart="@dimen/dp_0"
        app:contentInsetStartWithNavigation="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextAppearance="?subtitleTextAppearance"
        app:titleTextAppearance="?titleTextAppearance">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inbox_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_12"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.tokopedia.contactus.inboxticket2.view.customview.CustomEditText
                android:id="@+id/custom_search"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="Cari..."
                android:textColor="@color/black_70"
                android:textColorHint="@color/black_38"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_count_current"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_count_current"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_count_total"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_count_total"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_previous_up"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="/4" />

            <ImageView
                android:id="@+id/iv_previous_up"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_12"
                android:background="?selectableItemBackground"
                android:tint="@color/grey_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_next_down"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_up" />

            <ImageView
                android:id="@+id/iv_next_down"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:background="?selectableItemBackground"
                android:rotation="180"
                android:tint="@color/grey_700"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_up" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_priority_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:drawableLeft="@drawable/resized_priority_label_image"
        android:drawableStart="@drawable/resized_priority_label_image"
        android:drawablePadding="@dimen/dp_minus2"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:text="@string/layanan_prioritas"
        android:textColor="@color/purple"
        android:textSize="@dimen/sp_10"
        android:lineSpacingExtra="@dimen/sp_2"
        android:textStyle="normal"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_ticket_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        android:textColor="@color/contact_us_grey_n_700_96"
        android:textStyle="normal"
        app:layout_goneMarginTop="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_priority_label"
        tools:text="Prifikasi dan
dinilaiwbckwbvkbwvwkwbkjewvrrevervrevrvvvrvrrevrvrvevebvwv" />

    <TextView
        android:id="@+id/tv_id_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/tv_ticket_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_ticket_title"
        tools:text="ID: #00079468" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_view_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:text="@string/contact_us_transaction_details"
        android:textColor="@color/contact_us_g_500"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_id_num"
        app:layout_goneMarginTop="@dimen/dp_12" />

    <View
        android:id="@+id/top_divider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/tv_id_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_goneMarginTop="@dimen/dp_16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_message_list"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintTop_toBottomOf="@+id/top_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:listitem="@layout/layout_item_message" />

    <include
        android:id="@+id/text_toolbar"
        layout="@layout/layout_bottom_text_toolbar"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/view_help_rate"
        layout="@layout/layout_rating"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/view_link_bottom"
        layout="@layout/layout_link_bottom"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/view_rply_botton_before_csat_rating"
        layout="@layout/rply_button_bottom"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_12"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/no_ticket_found"
        layout="@layout/layout_no_ticket_found"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>