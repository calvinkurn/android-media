<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/new_margin_sm"
        android:text="@string/transaksi_bermasalah"
        android:textColor="@color/black"
        android:textSize="@dimen/font_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_order"
        android:layout_width="39dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:background="@drawable/rounded_rectangle_grey_border"
        android:padding="@dimen/margin_vvs"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/cardview_invoice"
        app:layout_constraintTop_toTopOf="@+id/cardview_invoice"
        app:srcCompat="@drawable/ic_toped_empty_search" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_invoice"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_72"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_transaction_title">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_background_grey" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_ticket_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:includeFontPadding="false"
        android:textColor="@color/green_nob"
        app:layout_constraintStart_toEndOf="@+id/img_order"
        app:layout_constraintTop_toTopOf="@+id/cardview_invoice"
        tools:text="INV/20171010/XVII/X/24225245" />

    <TextView
        android:id="@+id/txt_ticket_title"
        android:layout_width="0dp"
        android:layout_height="13dp"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:text="TextView"
        android:textColor="@color/black_55"
        android:textSize="@dimen/font_micro"
        app:layout_constraintEnd_toEndOf="@id/cardview_invoice"
        app:layout_constraintStart_toEndOf="@id/img_order"
        app:layout_constraintTop_toBottomOf="@+id/txt_ticket_invoice"
        tools:text="Helm Cargloss MXC Supertrack Ice Brown" />

    <TextView
        android:id="@+id/txt_query_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/new_margin_sm"
        android:text="@string/apa_kendala_anda"
        android:textColor="@color/black"
        android:textSize="@dimen/font_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_invoice" />

    <LinearLayout
        android:id="@+id/ticket_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_query_title" />

</androidx.constraintlayout.widget.ConstraintLayout>