<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/new_margin_sm"
        android:textColor="@color/black3_text"
        android:textSize="@dimen/font_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Transaksi Bermasalah" />

    <ImageView
        android:id="@+id/img_order"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/margin_default"
        android:background="@drawable/rounded_rectangle_grey_border"
        android:padding="@dimen/margin_vvs"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/cardview_invoice"
        app:layout_constraintTop_toTopOf="@+id/cardview_invoice"
        app:srcCompat="@drawable/ic_toped_empty_search" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_invoice"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView21">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_background_grey" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txt_ticket_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_default"
        android:includeFontPadding="false"
        android:textColor="@color/green_text"
        app:layout_constraintStart_toEndOf="@+id/img_order"
        app:layout_constraintTop_toTopOf="@+id/cardview_invoice"
        tools:text="INV/20171010/XVII/X/24225245" />

    <TextView
        android:id="@+id/txt_ticket_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_ms"
        android:layout_marginStart="@dimen/margin_ms"
        android:layout_marginTop="@dimen/margin_ms"
        android:includeFontPadding="false"
        android:text="TextView"
        android:textSize="@dimen/font_micro"
        app:layout_constraintStart_toEndOf="@+id/img_order"
        app:layout_constraintTop_toBottomOf="@+id/txt_ticket_invoice"
        tools:text="Helm Cargloss MXC Supertrack Ice Brown" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/new_margin_sm"
        android:textColor="@color/black3_text"
        android:textSize="@dimen/font_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_invoice"
        android:text="Apa Kendala Anda?" />

    <LinearLayout
        android:id="@+id/ticket_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView24"
        android:layout_marginLeft="16dp"></LinearLayout>

</android.support.constraint.ConstraintLayout>