<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ticket_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_17"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        tools:text="Prifikasi dan
dinilai" />

    <TextView
        android:id="@+id/tv_ticket_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/rounded_rect_yellow"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:textColor="#ca8600"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_ticket_title"
        app:layout_constraintStart_toEndOf="@+id/tv_ticket_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dalam Proses" />

    <TextView
        android:id="@+id/tv_ref_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/tv_ticket_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_ticket_title"
        tools:text="ID: #00079468" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/green_nob"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_ref_num"
        tools:text="Detail Transaksi" />

    <View
        android:id="@+id/top_divider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/tv_ref_num" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_message_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:listitem="@layout/layout_collapsed_msg"
        app:layout_constraintTop_toBottomOf="@+id/top_divider" />

    <include
        android:id="@+id/evveerbrb"
        layout="@layout/layout_bottom_text_toolbar"
        android:layout_width="0dp"
        android:elevation="@dimen/dp_8"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>