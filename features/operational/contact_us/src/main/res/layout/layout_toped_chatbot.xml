<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/new_margin_sm">

        <ImageView
            android:id="@+id/img_topbot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_med"
            android:layout_marginStart="@dimen/margin_med"
            android:layout_marginTop="@dimen/new_margin_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_topedbot" />

        <TextView
            android:id="@+id/txt_hi_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:textColor="@color/black"
            android:textSize="@dimen/font_title_big"
            app:layout_constraintStart_toEndOf="@+id/img_topbot"
            app:layout_constraintTop_toTopOf="@+id/img_topbot"
            android:text="@string/hai_syefti" />

        <TextView
            android:id="@+id/txt_user_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/new_margin_tiny"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/black_87"
            android:textSize="@dimen/font_small"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_topbot"
            app:layout_constraintTop_toBottomOf="@+id/txt_hi_user"
            android:text="@string/chat_bot_message" />

        <TextView
            android:id="@+id/btn_chat_toped"
            android:layout_width="0dp"
            android:layout_height="@dimen/searchview_height"
            android:layout_marginBottom="@dimen/new_margin_sm"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_rectangle_green_solid"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_smaller"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_user_info"
            app:layout_constraintVertical_bias="0.0"
            android:text="@string/chat_dengan_bot" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>