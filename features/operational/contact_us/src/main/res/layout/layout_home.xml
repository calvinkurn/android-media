<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafbfc">
<LinearLayout
    android:id="@+id/layout_article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <include
            android:id="@+id/toped_bot"
            layout="@layout/layout_toped_chatbot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/new_margin_sm"
            />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/artikel_populer"
            layout="@layout/layout_article_popular"
            app:layout_constraintTop_toBottomOf="@+id/toped_bot"/>
</LinearLayout>
        <FrameLayout
            android:id="@+id/transactions_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_margin_sm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_article">

            <include
                layout="@layout/layout_order_list"
                android:visibility="gone" />

            <include
                layout="@layout/layout_no_orders"
                android:visibility="visible" />

        </FrameLayout>

        <include
            android:id="@+id/contact_us_section"
            layout="@layout/layout_contact_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/new_margin_sm"
            app:layout_constraintTop_toBottomOf="@+id/transactions_orders" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>