<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@color/grey_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_help_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="8dp"
        android:paddingTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/text_satisfied"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/smile_layout"
        app:layout_constraintTop_toBottomOf="@id/divider_1"

        />

    <LinearLayout
        android:id="@+id/smile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:weightSum="5"
        app:layout_constraintTop_toBottomOf="@id/txt_help_title">

    </LinearLayout>

    <TextView
        android:id="@+id/txt_smile_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:textColor="@color/green_300"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/smile_layout"
        tools:layout_editor_absoluteX="16dp"

        tools:text="Memuaskan" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@color/grey_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_smile_selected" />

    <TextView
        android:id="@+id/txt_feedback_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/divider"
        tools:text="Apa yang bisa diperbaiki dari layanan kami?" />

    <TextView
        android:id="@+id/txt_first_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/rounded_stroke_grey"
        android:gravity="center"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txt_second_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_feedback_question"
        app:layout_constraintWidth_default="spread"
        tools:text="Kecepatan respons" />

    <TextView
        android:id="@+id/txt_second_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:backgroundTint="@color/green_50"
        android:background="@drawable/rounded_stroke_grey"
        android:gravity="center"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_first_option"
        app:layout_constraintTop_toBottomOf="@+id/txt_feedback_question"
        app:layout_constraintWidth_default="spread"
        tools:text="Kejelasan bahasa" />

    <TextView
        android:id="@+id/txt_third_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/rounded_stroke_grey"
        android:gravity="center"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_first_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_first_option"
        tools:text="Waktu penyelesaian" />

    <TextView
        android:id="@+id/txt_fourth_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/rounded_stroke_grey"
        android:gravity="center"
        android:textColor="@color/grey_500"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_second_option"
        app:layout_constraintStart_toStartOf="@+id/txt_second_option"
        app:layout_constraintTop_toBottomOf="@+id/txt_first_option"
        tools:text="Kualitas jawaban" />

    <TextView
        android:id="@+id/txt_finished"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_24"
        android:background="@drawable/rounded_rectangle_greenbutton_solid"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Selesai" />


</android.support.constraint.ConstraintLayout>