<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quest_widget_view_flipper"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:measureAllChildren="false">

    <include layout="@layout/quest_widget_shimmer" android:id="@+id/quest_widget_shimmer"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_12dp"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_lihat"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_label"
        app:layout_constraintBottom_toBottomOf="@id/tv_label"
        android:textColor="@color/Unify_G500"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rv_quest_widget"
        android:layout_marginTop="@dimen/dim_12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_label"
        app:layout_constraintStart_toStartOf="@id/tv_label"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/quest_widget_error" android:id="@+id/quest_widget_error"/>

    <include layout="@layout/quest_widget_login" android:id="@+id/quest_widget_login"/>

</ViewFlipper>