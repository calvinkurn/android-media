<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tm_cmn_dp_108"
    android:background="@drawable/tm_coupon_skeleton">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivShopAvatar"
        android:layout_width="@dimen/tm_cmn_dp_58"
        android:layout_height="@dimen/tm_cmn_dp_58"
        android:layout_marginStart="@dimen/tm_cmn_dp_14"
        android:layout_marginTop="@dimen/unify_space_16"
        app:unify_image_type="circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="@dimen/tm_cmn_dp_58"
        android:layout_height="@dimen/tm_cmn_dp_22"
        app:srcCompat="@drawable/tm_coupon_badge"
        app:layout_constraintTop_toBottomOf="@+id/ivShopAvatar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/tm_cmn_dp_14"
        android:layout_marginTop="@dimen/tm_cmn_dp_6"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tm_cmn_dp_36"
        android:layout_marginTop="@dimen/unify_space_8"
        android:alpha="0.6"
        android:textColor="@color/Unify_NN0"
        app:layout_constraintStart_toEndOf="@id/ivShopAvatar"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCouponType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tm_cmn_dp_36"
        android:layout_marginTop="@dimen/unify_space_2"
        android:textColor="@color/Unify_NN0"
        app:layout_constraintStart_toEndOf="@id/ivShopAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvShopName"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCouponBenefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_2"
        android:layout_margin="@dimen/unify_space_4"
        android:textColor="@color/Unify_NN0"
        app:layout_constraintStart_toEndOf="@id/tvCouponType"
        app:layout_constraintTop_toBottomOf="@id/tvShopName"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCouponHingga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="@dimen/unify_space_4"
        android:textColor="@color/Unify_NN0"
        app:layout_constraintStart_toEndOf="@id/ivShopAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvCouponType"
        app:typographyType="display_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCouponValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN0"
        android:layout_marginStart="@dimen/unify_space_4"
        app:layout_constraintStart_toEndOf="@id/tvCouponHingga"
        app:layout_constraintTop_toBottomOf="@id/tvCouponType"
        app:layout_goneMarginStart="@dimen/tm_cmn_dp_36"
        app:typographyType="heading_1"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="@dimen/tm_cmn_dp_22"
        android:layout_height="@dimen/tm_cmn_dp_22"
        app:layout_constraintBottom_toBottomOf="@id/tvCouponValue"
        app:layout_constraintStart_toEndOf="@id/tvCouponValue"
        app:layout_constraintTop_toTopOf="@id/tvCouponValue"
        app:srcCompat="@drawable/tm_coupon_rb" />

</androidx.constraintlayout.widget.ConstraintLayout>
