query hachikoCatalogQuery($category_id: Int, $points_range: Int, $page: Int, $page_size: Int, $sort_id: Int) {
  catalog: hachikoCatalogList(category_id: $category_id, points_range: $points_range, page: $page, page_size: $page_size, sort_id: $sort_id) {
    catalogs {
      id
      promo_id
      base_code
      slug
      expired
      points
      points_str
      title
      quota
      sub_title
      thumbnail_url
      thumbnail_url_mobile
      image_url
      image_url_mobile
      is_gift
    }
    has_next
  }
}
