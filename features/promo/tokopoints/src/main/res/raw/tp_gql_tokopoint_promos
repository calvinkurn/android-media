query CatalogListQuery($category_id: Int, $points_range: Int, $page: Int, $page_size: Int, $sort_id: Int) {
  catalog: hachikoCatalogList(category_id: $category_id, points_range: $points_range, page: $page, page_size: $page_size, sort_id: $sort_id) {
    catalogs {
      id
      promo_id
      base_code
      slug
      expired
      points
      points_str
      title
      quota
      sub_title
      thumbnail_url
      thumbnail_url_mobile
      image_url
      image_url_mobile
      is_gift
      expiredLabel
      expiredStr
      isDisabled
      disableErrorMessage
      upperTextDesc
      isDisabledButton
    }
    has_next
  }
  coupons: hachikoMyCouponList(page: $page, page_size: $page_size) {
    total_data
    coupons {
      catalog_id
      usage {
        active_count_down
        expired_count_down
        text
        usage_str
        btn_usage {
          text
          url
          applink
          type
        }
      }
      promo_id
      code
      expired
      title
      sub_title
      catalog_title
      catalog_sub_title
      description
      icon
      image_url
      image_url_mobile
      thumbnail_url
      thumbnail_url_mobile
      cta
      cta_desktop
    }
    extra_info {
      info_html
      link_text
      link_url
    }
    has_next
  }
}
