query PointHistoryQuery($page: Int, $page_size: Int) {
  point_history : hachikoPointHistory(page: $page, page_size: $page_size) {
    total_data
    point_histories {
      transaction_id
      create_time
      create_time_desc
      title
      notes
      member_points
      reward_points
      history_type
      icon
    }
    has_next
  }
}
