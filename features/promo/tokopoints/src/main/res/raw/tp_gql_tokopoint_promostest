query MyCouponsListQuery($type: String, $category_id: Int, $product_id: Int, $page: Int, $page_size: Int) {
  coupons: hachikoMyCouponList(type: $type, category_id: $category_id, product_id: $product_id, page: $page, page_size: $page_size) {
    total_data
    coupons {
      catalog_id
      promo_id
      code
      usage {
        active_count_down
        expired_count_down
        text
        usage_str
        btn_usage {
          text
          url
          applink
          type
        }
      }
      expired
      title
      sub_title
      catalog_title
      catalog_sub_title
      description
      icon
      image_url
      image_url_mobile
      thumbnail_url
      thumbnail_url_mobile
      cta
      cta_desktop
      __typename
    }
    extra_info {
      info_html
      link_text
      link_url
    }
    has_next
  }
}
