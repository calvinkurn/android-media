<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TokoPointsTabs" parent="Tabs.Secondary">
        <item name="footerPadding">16dp</item>
        <item name="topPadding">12dp</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">1dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="selectedBold">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/border_bottom_no_rounded</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_400</item>
        <item name="colorControlActivated">@color/tkpd_main_green</item>
    </style>

    <style name="ToolbarExpandedTitle3">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:textColor">@color/black_39</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="TPProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/medium_green</item>
    </style>

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>

    </style>


</resources>
