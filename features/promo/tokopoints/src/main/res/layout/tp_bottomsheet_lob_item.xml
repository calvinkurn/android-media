<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/tp_padding_large">

    <ImageView
        android:id="@+id/img_lob"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/tp_text_size_small"
        app:layout_constraintEnd_toEndOf="@+id/img_lob"
        app:layout_constraintStart_toStartOf="@+id/img_lob"
        app:layout_constraintTop_toBottomOf="@+id/img_lob" />

</androidx.constraintlayout.widget.ConstraintLayout>