<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:elevation="@dimen/dp_0">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-8dp"
            android:layout_marginTop="-8dp"
            android:layout_marginRight="-8dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/dp_6"
            app:cardUseCompatPadding="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/layout_point"
                    layout="@layout/tp_layout_catalog_header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintDimensionRatio="h,3:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_point" />

                <TextView
                    android:id="@+id/text_quota_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_small"
                    android:layout_marginLeft="@dimen/tp_margin_small"
                    android:layout_marginTop="@dimen/tp_margin_small"
                    android:background="@drawable/bg_tp_remaining_exchange"
                    android:paddingLeft="@dimen/tp_margin_small"
                    android:paddingTop="@dimen/tp_padding_xxsmall"
                    android:paddingRight="@dimen/tp_margin_small"
                    android:paddingBottom="@dimen/tp_padding_xxsmall"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/tp_text_size_xxsmall"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/img_banner"
                    app:layout_constraintTop_toTopOf="@+id/img_banner" />

                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/tp_margin_medium"
                    android:paddingTop="@dimen/tp_padding_small"
                    android:paddingRight="@dimen/tp_margin_medium"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/tp_text_size_small"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_banner" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_min_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_medium"
                    android:layout_marginLeft="@dimen/tp_margin_medium"
                    android:layout_marginTop="@dimen/tp_padding_regular"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_description"
                    app:srcCompat="@drawable/ic_tp_rp" />

                <TextView
                    android:id="@+id/text_min_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_small"
                    android:layout_marginLeft="@dimen/tp_margin_small"
                    android:text="@string/tp_label_min_exchange"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/tp_text_size_xsmall"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/img_min_exchange"
                    app:layout_constraintStart_toEndOf="@+id/img_min_exchange"
                    app:layout_constraintTop_toTopOf="@+id/img_min_exchange" />

                <TextView
                    android:id="@+id/text_min_exchange_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_small"
                    android:layout_marginLeft="@dimen/tp_margin_small"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/tp_text_size_small"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/img_min_exchange"
                    app:layout_constraintStart_toEndOf="@+id/text_min_exchange"
                    app:layout_constraintTop_toTopOf="@+id/img_min_exchange" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_points_stack_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_medium"
                    android:layout_marginLeft="@dimen/tp_margin_medium"
                    android:layout_marginTop="@dimen/tp_padding_regular"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_min_exchange"
                    app:srcCompat="@drawable/ic_tp_point_stack" />

                <TextView
                    android:id="@+id/text_point_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_small"
                    android:layout_marginLeft="@dimen/tp_margin_small"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/tp_text_size_xsmall"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/img_points_stack_coupon"
                    app:layout_constraintTop_toTopOf="@+id/img_points_stack_coupon" />

                <TextView
                    android:id="@+id/text_point_value_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_small"
                    android:layout_marginLeft="@dimen/tp_margin_small"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/medium_green"
                    android:textSize="@dimen/tp_text_size_small"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/img_points_stack_coupon"
                    app:layout_constraintTop_toBottomOf="@+id/text_point_label" />

                <TextView
                    android:id="@+id/text_point_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_small"
                    android:layout_marginLeft="@dimen/tp_margin_small"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_round_corner"
                    android:fontFamily="sans-serif-medium"
                    android:paddingLeft="@dimen/tp_padding_xsmall"
                    android:paddingTop="@dimen/tp_padding_xxsmall"
                    android:paddingRight="@dimen/tp_padding_xsmall"
                    android:paddingBottom="@dimen/tp_padding_xxsmall"
                    android:textColor="#ea212d"
                    android:textSize="@dimen/tp_text_size_xsmall"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/text_point_value_coupon"
                    app:layout_constraintStart_toEndOf="@+id/text_point_value_coupon"
                    app:layout_constraintTop_toTopOf="@+id/text_point_value_coupon" />


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_medium"
                    android:layout_marginLeft="@dimen/tp_margin_medium"
                    android:layout_marginTop="@dimen/tp_padding_regular"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_points_stack_coupon"
                    app:srcCompat="@drawable/ic_tp_time" />

                <TextView
                    android:id="@+id/text_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_small"
                    android:layout_marginLeft="@dimen/tp_margin_small"
                    android:text="@string/tp_label_valid_for"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/tp_text_size_xsmall"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/img_time"
                    app:layout_constraintStart_toEndOf="@+id/img_time"
                    app:layout_constraintTop_toTopOf="@+id/img_time" />

                <ProgressBar
                    android:id="@+id/progress_timer"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/bg_tp_timer_bg"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/text_time_value"
                    app:layout_constraintLeft_toLeftOf="@+id/text_time_value"
                    app:layout_constraintRight_toRightOf="@+id/text_time_value"
                    app:layout_constraintTop_toTopOf="@+id/text_time_value" />

                <TextView
                    android:id="@+id/text_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_small"
                    android:layout_marginLeft="@dimen/tp_margin_small"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/tp_text_size_small"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/img_time"
                    app:layout_constraintStart_toEndOf="@+id/text_time_label"
                    app:layout_constraintTop_toTopOf="@+id/img_time" />


                <TextView
                    android:id="@+id/text_disabled_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/tp_margin_regular"
                    android:layout_marginLeft="@dimen/tp_margin_regular"
                    android:layout_marginTop="@dimen/tp_margin_small"
                    android:textColor="@color/red_error"
                    android:textSize="@dimen/tp_text_size_small"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/img_time"
                    app:layout_constraintTop_toBottomOf="@+id/text_time_label" />

                <ViewFlipper
                    android:id="@+id/lin_container_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tp_margin_small"
                    android:measureAllChildren="false"
                    android:orientation="horizontal"
                    android:padding="@dimen/tp_padding_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_disabled_error">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_action_1"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@drawable/bg_tp_bg_gift"
                            android:drawableStart="@drawable/ic_tp_gift"
                            android:drawableLeft="@drawable/ic_tp_gift"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_12"
                            android:textAllCaps="false"
                            android:textColor="@color/black_54"
                            android:textSize="@dimen/tp_text_size_small"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/button_action_2"
                            android:layout_width="0dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_green"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/tp_text_size_small"
                            android:visibility="visible" />

                    </LinearLayout>

                    <include layout="@layout/tp_layput_container_swipe" />

                </ViewFlipper>

                <ProgressBar
                    android:id="@+id/progress_refetch_code"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/lin_container_button"
                    app:layout_constraintLeft_toLeftOf="@+id/lin_container_button"
                    app:layout_constraintRight_toRightOf="@+id/lin_container_button"
                    app:layout_constraintTop_toTopOf="@+id/lin_container_button" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@color/white">

            <com.tokopedia.design.component.Tabs
                android:id="@+id/tab_layout_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicatorColor="@color/tkpd_main_green"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/tkpd_main_green"
                app:tabTextAppearance="@style/TokoPointsTabs"
                app:tabTextColor="@color/black_38">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tp_label_tnc" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tp_label_how_to_use" />

            </com.tokopedia.design.component.Tabs>
        </android.support.design.widget.AppBarLayout>

        <com.tokopedia.tokopoints.view.util.WrapContentHeightViewPager
            android:id="@+id/view_pager_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>
</ScrollView>
