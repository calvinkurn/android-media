<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_ticker_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/tp_margin_normal"
    android:paddingLeft="@dimen/tp_padding_regular"
    android:paddingRight="@dimen/tp_padding_regular"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:visibility="visible">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:autoSlideDelayNumber="5000"
        app:closeButtonVisibility="gone"
        app:enableAutoSlide="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerShapeType="loose"
        app:tickerType="announcement" />

</androidx.constraintlayout.widget.ConstraintLayout>