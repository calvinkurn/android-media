<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_ticker_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/tp_margin_medium"
    android:background="@drawable/bg_tp_ticker_new"
    android:paddingLeft="@dimen/tp_padding_regular"
    android:paddingRight="@dimen/tp_padding_regular"
    android:paddingBottom="@dimen/tp_padding_small"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/container_dynamic_links"
    tools:visibility="visible">

    <com.tokopedia.abstraction.base.view.widget.TouchViewPager
        android:id="@+id/view_pager_ticker"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/tp_padding_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.design.viewpagerindicator.CirclePageIndicator
        android:id="@+id/page_indicator_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_4"
        android:padding="@dimen/tp_margin_xsmall"
        app:fillColor="@color/tp_ticker_indicator_selected_color"
        app:layout_constraintTop_toBottomOf="@+id/view_pager_ticker"
        app:pageColor="@color/tp_ticker_indicator_default_color" />

    <ImageView
        android:id="@+id/ic_close_ticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:padding="@dimen/dp_2"
        android:tint="@color/tp_ticker_close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_24dp" />

</android.support.constraint.ConstraintLayout>