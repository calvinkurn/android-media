<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tp_height_bottom_membership_view"
    android:layout_marginTop="@dimen/dp_2"
    app:cardCornerRadius="@dimen/dp_1"
    app:cardElevation="@dimen/dp_4">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:padding="@dimen/dp_8">


        <ImageView
            android:id="@+id/img_egg_bottom"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginStart="@dimen/tp_margin_small"
            android:layout_marginLeft="@dimen/tp_margin_small"
            android:contentDescription="@string/tp_label_see_loyalty"
            app:layout_constraintBottom_toBottomOf="@+id/text_membership_value_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_membership_label_bottom" />

        <TextView
            android:id="@+id/text_membership_label_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tp_margin_regular"
            android:layout_marginLeft="@dimen/tp_margin_regular"
            android:text="@string/tp_label_membership"
            android:textColor="@color/black_54"
            android:textSize="@dimen/tp_text_size_xsmall"
            app:layout_constraintStart_toEndOf="@+id/img_egg_bottom"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_membership_value_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:paddingEnd="@dimen/tp_padding_regular"
            android:paddingRight="@dimen/tp_padding_regular"
            android:textColor="@color/black_70"
            android:textSize="@dimen/tp_text_size_small"
            app:layout_constraintLeft_toLeftOf="@+id/text_membership_label_bottom"
            app:layout_constraintTop_toBottomOf="@+id/text_membership_label_bottom" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_points_stack_bottom"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/tp_margin_regular"
            android:layout_marginRight="@dimen/tp_margin_regular"
            app:layout_constraintBottom_toBottomOf="@+id/ll_my_points_bottom"
            app:layout_constraintRight_toLeftOf="@+id/ll_my_points_bottom"
            app:layout_constraintTop_toTopOf="@+id/ll_my_points_bottom"
            app:srcCompat="@drawable/ic_tp_point_stack" />

        <LinearLayout
            android:id="@+id/ll_my_points_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/tp_margin_small"
            android:layout_marginRight="@dimen/tp_margin_small"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/text_my_points_label_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tp_label_see_point_saya"
                android:textColor="@color/black_54"
                android:textSize="@dimen/tp_text_size_xsmall" />

            <TextView
                android:id="@+id/text_my_points_value_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="@color/black_70"
                android:textSize="@dimen/tp_text_size_small" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
