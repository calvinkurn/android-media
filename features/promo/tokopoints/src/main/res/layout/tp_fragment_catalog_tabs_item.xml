<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/tp_margin_large" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_catalog_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tp_margin_xsmall"
        android:layout_marginBottom="@dimen/tp_margin_xsmall"
        android:layout_marginEnd="@dimen/tp_margin_xsmall"
        android:layout_marginRight="@dimen/tp_margin_xsmall"
        android:layout_marginStart="@dimen/tp_margin_xsmall"
        android:layout_marginLeft="@dimen/tp_margin_xsmall"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <include layout="@layout/layout_tp_network_error" />

    <include layout="@layout/layout_tp_empty_catalog" />

</ViewFlipper>
