<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/progress_bar_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/right_indicator_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progress_bar_indicator_wrapper"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_height="50dp"
        tools:layout_width="match_parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/right_indicator_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/progress_bar_wrapper"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        tools:layout_height="50dp"
        tools:layout_width="50dp"
        tools:visibility="visible"/>

    <FrameLayout
        android:id="@+id/progress_bar_indicator_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_bar_wrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_height="50dp"
        tools:layout_width="match_parent"
        tools:visibility="visible"
        tools:background="@color/Red_R400"/>

</androidx.constraintlayout.widget.ConstraintLayout>