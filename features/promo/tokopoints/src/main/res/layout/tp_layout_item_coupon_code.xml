<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Unify_NN50"
    android:paddingLeft="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingRight="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/iv_coupon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                app:typographyType="display_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_coupon_title"
                android:layout_marginTop="22dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/Unify_NN950"
                app:typographyWeight="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Diskon 75% hingga Rp100.000" />

            <View
                android:id="@+id/top_separator"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="18dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_dash_coupon_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_coupon_title"
                app:layout_constraintTop_toBottomOf="@id/tv_coupon_title" />

            <com.tokopedia.unifyprinciples.Typography
                app:typographyType="display_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/tv_code"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="8dp"
                app:drawableTint="@color/Unify_GN500"
                android:textColor="@color/Unify_GN500"
                android:background="@drawable/bg_coupon_code"
                app:typographyWeight="bold"
                app:layout_constraintStart_toStartOf="@id/top_separator"
                app:layout_constraintTop_toBottomOf="@id/top_separator"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="BCADITOKOPEDIA"
                />

            <com.tokopedia.unifyprinciples.Typography
                app:typographyType="display_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dynamic_infos"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintStart_toStartOf="@id/tv_code"
                app:layout_constraintTop_toBottomOf="@id/tv_code"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="\u25CF Minimal Transaksi Rp600.000\n\u25CF Khusus pengiriman GoSend" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:outlineProvider="none"
        app:cardBackgroundColor="@color/Unify_NN50"
        app:cardCornerRadius="24dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cv_data"
        app:layout_constraintVertical_bias="0.30" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:outlineProvider="none"
        app:cardBackgroundColor="@color/Unify_NN50"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cv_data"
        app:layout_constraintVertical_bias="0.30" />

</androidx.constraintlayout.widget.ConstraintLayout>