<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/box_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintCircleRadius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dp_280"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintCircleRadius="5dp"
            app:loader_type="rect" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/timer_shimmer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintCircleRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="circle" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/timer_label"
                android:layout_width="@dimen/dp_90"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@id/timer_shimmer"
                app:layout_constraintCircleRadius="5dp"
                app:layout_constraintStart_toEndOf="@id/timer_shimmer"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/dp_90"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="@dimen/dp_120"
                android:layout_marginEnd="@dimen/dp_120"
                android:layout_marginRight="16dp"
                app:layout_constraintCircleRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/timer_label"
                app:loader_type="rect" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/transks_shimmer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintCircleRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="circle" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/transks_label"
                android:layout_width="@dimen/dp_90"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@id/transks_shimmer"
                app:layout_constraintCircleRadius="5dp"
                app:layout_constraintStart_toEndOf="@id/transks_shimmer"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/dp_90"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="@dimen/dp_120"
                android:layout_marginEnd="@dimen/dp_120"
                android:layout_marginRight="16dp"
                app:layout_constraintCircleRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/transks_label"
                app:loader_type="rect" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/Unify_N50" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dp_220"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_50"
            app:layout_constraintCircleRadius="5dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dp_300"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_60"
            app:layout_constraintCircleRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/transks_label"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dp_250"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_50"
            app:layout_constraintCircleRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/transks_label"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dp_150"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_120"
            app:layout_constraintCircleRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/transks_label"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dp_76"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_50"
            app:layout_constraintCircleRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/transks_label"
            app:loader_type="rect" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/cost_shimmer"
            android:layout_width="40dp"
            android:layout_height="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/dp_18"
            app:layout_constraintCircleRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dp_76"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            app:layout_constraintCircleRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cost_shimmer"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="@dimen/dp_160"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintCircleRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="rect" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>