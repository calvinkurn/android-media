<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <com.tkpd.remoteresourcerequest.view.DeferredImageView
            android:id="@+id/img_error2"
            android:layout_width="280dp"
            android:layout_height="210dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:remoteFileName="coupon_emptylistimage.png" />

        <TextView
            android:id="@+id/text_title_error2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_error2"
            android:layout_marginStart="@dimen/tp_margin_medium"
            android:layout_marginLeft="@dimen/tp_margin_medium"
            android:layout_marginTop="@dimen/tp_margin_large"
            android:layout_marginEnd="@dimen/tp_margin_medium"
            android:layout_marginRight="@dimen/tp_margin_medium"
            android:gravity="center_horizontal"
            android:text="@string/tp_label_prepare_catalog"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/tp_text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_label_error2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title_error2"
            android:layout_marginStart="@dimen/tp_margin_medium"
            android:layout_marginLeft="@dimen/tp_margin_medium"
            android:layout_marginEnd="@dimen/tp_margin_medium"
            android:layout_marginRight="@dimen/tp_margin_medium"
            android:gravity="center_horizontal"
            android:padding="@dimen/tp_padding_small"
            android:text="@string/tp_label_go_shopping"
            android:textColor="@color/Unify_N700_44"
            android:textSize="@dimen/tp_text_size_small" />


        <TextView
            android:id="@+id/button_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_label_error2"
            android:layout_marginStart="@dimen/tp_margin_medium"
            android:layout_marginLeft="@dimen/tp_margin_medium"
            android:layout_marginTop="@dimen/tp_margin_large"
            android:layout_marginEnd="@dimen/tp_margin_medium"
            android:layout_marginRight="@dimen/tp_margin_medium"
            android:background="@drawable/bg_button_green"
            android:gravity="center"
            android:padding="@dimen/tp_padding_medium"
            android:text="@string/tp_label_exchange_point"
            android:textColor="@color/Unify_N0"
            android:textSize="@dimen/tp_text_size_small"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/text_empty_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_continue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/tp_margin_medium"
            android:background="@null"
            android:gravity="center"
            android:text="@string/tp_label_help_with_storepoints"
            android:textAllCaps="false"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/tp_text_size_small" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
