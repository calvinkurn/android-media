<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_col_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="8" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title_banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="@id/iv_col_1"
        app:layout_constraintLeft_toLeftOf="@+id/iv_col_1"
        app:layout_constraintStart_toStartOf="@+id/iv_col_1"
        app:layout_constraintTop_toTopOf="@+id/iv_col_1"
        tools:text="Title in ba" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_title_banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/white"
        app:typographyWeight="bold"
        app:typographyType="heading_5"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/text_title_banner"
        app:layout_constraintStart_toStartOf="@+id/text_title_banner"
        app:layout_constraintTop_toBottomOf="@+id/text_title_banner"
        app:layout_constraintWidth_default="wrap"
        tools:text="Subtitle in banner" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title_bottom_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/tp_loyalty_color"
        app:typographyType="heading_5"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/iv_col_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_col_1"
        tools:text="Subtitle in banner Subtitle in banner Subtit  ubtitle in banner Subtitle i"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_title_bottom_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/tp_subtitle_color_topads"
        app:typographyType="small"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/iv_col_1"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_bottom_1"
        tools:text="Subtitle in banner Subtitle in banner Subtitle in banner Subtitle in banner   banner Subtitle in banner Subtitle in banner Subtitle in banner  banner Subtitle in banner Subtitle in banner Subtitle in banner"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

