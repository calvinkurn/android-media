<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:lineSpacingExtra="6sp"
        android:textColor="#f531353b"
        android:textSize="16sp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        tools:text="Huge News!" />

    <TextView
        android:id="@+id/text_see_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Lihat Semua"
        android:textColor="#f531353b"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/text_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:lineSpacingExtra="6sp"
        android:textColor="#8f000000"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        tools:text="Cari tahu sekarang juga" />

    <LinearLayout
        android:id="@+id/ll_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/text_sub_title">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_col_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_tp_section_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,3:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_title_banner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintLeft_toLeftOf="@+id/iv_col_1"
                app:layout_constraintStart_toStartOf="@+id/iv_col_1"
                app:layout_constraintTop_toTopOf="@+id/iv_col_1"
                app:layout_constraintWidth_default="wrap"
                tools:text="Title in banner" />

            <TextView
                android:id="@+id/text_sub_title_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintLeft_toLeftOf="@+id/text_title_banner"
                app:layout_constraintStart_toStartOf="@+id/text_title_banner"
                app:layout_constraintTop_toBottomOf="@+id/text_title_banner"
                app:layout_constraintWidth_default="wrap"
                tools:text="Subtitle in banner" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_col_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_tp_section_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,3:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_title_banner2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintLeft_toLeftOf="@+id/iv_col_2"
                app:layout_constraintStart_toStartOf="@+id/iv_col_2"
                app:layout_constraintTop_toTopOf="@+id/iv_col_2"
                app:layout_constraintWidth_default="wrap"
                tools:text="Title in banner" />

            <TextView
                android:id="@+id/text_sub_title_banner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:textStyle="bold"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintLeft_toLeftOf="@+id/text_title_banner2"
                app:layout_constraintStart_toStartOf="@+id/text_title_banner2"
                app:layout_constraintTop_toBottomOf="@+id/text_title_banner2"
                app:layout_constraintWidth_default="wrap"
                tools:text="Subtitle in banner" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_title_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="#f531353b"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_inner"
        tools:text="Title in banner" />

    <TextView
        android:id="@+id/text_sub_title_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="#8f000000"
        android:textSize="@dimen/dp_10"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_bottom"
        tools:text="Subtitle in banner" />

</android.support.constraint.ConstraintLayout>
