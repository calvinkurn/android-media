<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:background="@drawable/tp_rounded_grey_background"
    xmlns:tool="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_6"
        android:id="@+id/rel_touch_view"
        android:layout_width="@dimen/dp_56"
        tool:visibility="gone"
        android:layout_height="match_parent"
        android:background="@drawable/bg_tp_swipe"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_swipe_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@null"
            android:clickable="false"
            app:srcCompat="@drawable/ic_tp_vertical_row" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/container_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            tool:text="dbvovbidfbvisdfbvi"
            android:id="@+id/text_swipe"
            app:typographyType="heading_5"
            android:textColor="@color/discount_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

        <ImageButton
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:id="@+id/btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:clickable="false"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_check_green_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tp_rounded_grey_background"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/orange_red"
                tool:text="redden"
                app:typographyType="heading_5"
                android:textStyle="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/btn_copy_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/tp_label_copy_code"
                android:textColor="@color/tp_nonlogin_container_color"
                app:typographyType="body_2" />

        </RelativeLayout>

    </ViewFlipper>

</RelativeLayout>
