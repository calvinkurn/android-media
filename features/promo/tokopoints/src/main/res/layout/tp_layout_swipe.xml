<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/tp_rounded_grey_background">

    <RelativeLayout
        android:id="@+id/rel_touch_view"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_tp_swipe"
        android:visibility="visible"
        tool:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_swipe_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/gami_core_floating_egg_dp_22"
            android:layout_marginRight="@dimen/gami_core_floating_egg_dp_22"
            android:background="@null"
            android:clickable="false"
            app:srcCompat="@drawable/ic_tp_vertical_row" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/container_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textColor="@color/Unify_NN950_44"
            app:typographyType="heading_5"
            tool:text="dbvovbidfbvisdfbvi" />

        <ImageButton
            android:id="@+id/btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:clickable="false"
            android:tint="@color/Unify_NN0"
            app:srcCompat="@drawable/ic_tp_check_green_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tp_rounded_grey_background"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/Unify_YN500"
                android:textStyle="bold"
                app:typographyType="heading_5"
                tool:text="redden" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/btn_copy_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/tp_label_copy_code"
                android:textColor="@color/Unify_GN500"
                app:typographyType="body_2" />

        </RelativeLayout>

    </ViewFlipper>

</RelativeLayout>
