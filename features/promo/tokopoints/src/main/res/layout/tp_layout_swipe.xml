<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:background="@drawable/bg_tp_gray_outline"
    android:paddingLeft="@dimen/dp_6"
    android:paddingTop="@dimen/dp_5"
    android:paddingRight="@dimen/dp_6"
    android:paddingBottom="@dimen/dp_5">

    <RelativeLayout
        android:id="@+id/rel_touch_view"
        android:layout_width="@dimen/dp_56"
        android:layout_height="match_parent"
        android:background="@drawable/bg_tp_swipe"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_swipe_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@null"
            android:clickable="false"
            app:srcCompat="@drawable/ic_tp_vertical_row" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/container_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:clickable="false"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_check_green_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f8f8"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:id="@+id/text_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/orange_red"
                android:textSize="@dimen/tp_text_size_regular"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_copy_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/tp_label_copy_code"
                android:textSize="@dimen/tp_text_size_xsmall" />

        </RelativeLayout>

    </ViewFlipper>

</android.support.constraint.ConstraintLayout>
