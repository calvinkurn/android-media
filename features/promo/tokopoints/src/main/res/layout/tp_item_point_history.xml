<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_16">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:lineSpacingExtra="6sp"
        android:textColor="#7031353b"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/img_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10 April 2017" />

    <TextView
        android:id="@+id/text_txn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="#7031353b"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#2036473" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#f531353b"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/text_date"
        app:layout_constraintTop_toBottomOf="@+id/text_date"
        tools:text="Penukaran Points" />

    <TextView
        android:id="@+id/text_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="#ae31353b"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/text_date"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        tools:text="Kupon Gratis Ongkir J&amp;T Rp 5.000" />

    <TextView
        android:id="@+id/text_label_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="#ae31353b"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/text_date"
        app:layout_constraintTop_toBottomOf="@+id/text_note"
        android:text="Points: " />

    <TextView
        android:id="@+id/text_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:textColor="#03ac0e"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/text_label_point"
        app:layout_constraintTop_toTopOf="@+id/text_label_point"
        tools:text="+100" />

    <TextView
        android:id="@+id/text_label_loyalty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="#ae31353b"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/text_loyalty"
        app:layout_constraintTop_toBottomOf="@+id/text_note"
        android:text="Loyalty: " />

    <TextView
        android:id="@+id/text_loyalty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:textColor="#03ac0e"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_label_point"
        tools:text="+50" />
</android.support.constraint.ConstraintLayout>
