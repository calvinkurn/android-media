<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cons_ticker_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/tp_margin_medium"
    android:layout_marginRight="@dimen/tp_margin_medium"
    android:layout_marginTop="@dimen/tp_margin_medium"
    android:background="@drawable/bg_tp_ticker"
    android:padding="@dimen/tp_padding_regular"
    android:visibility="visible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/line_separator_points_horizontal">

    <com.tokopedia.tokopoints.view.util.WrapContentHeightViewPager
        android:id="@+id/view_pager_ticker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.design.viewpagerindicator.CirclePageIndicator
        android:id="@+id/page_indicator_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/tp_margin_xsmall"
        android:padding="@dimen/tp_margin_xsmall"
        app:layout_constraintTop_toBottomOf="@+id/view_pager_ticker" />
</android.support.constraint.ConstraintLayout>