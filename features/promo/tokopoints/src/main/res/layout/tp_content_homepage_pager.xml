<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.design.component.Tabs
        android:id="@+id/tab_layout_promos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/tkpd_main_green"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/tkpd_main_green"
        app:tabTextAppearance="@style/TokoPointsTabs"
        app:tabTextColor="@color/black_38">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tp_label_exchange_points" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tp_label_my_coupon" />

    </com.tokopedia.design.component.Tabs>

    <TextView
        android:id="@+id/text_count"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="@dimen/tp_margin_small"
        android:layout_marginRight="@dimen/tp_margin_small"
        android:layout_marginTop="@dimen/tp_margin_xsmall"
        android:background="@drawable/circle_green"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/tp_text_size_xsmall"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tab_layout_promos"
        app:layout_constraintEnd_toEndOf="@+id/tab_layout_promos"
        app:layout_constraintTop_toTopOf="@+id/tab_layout_promos" />
</android.support.constraint.ConstraintLayout>