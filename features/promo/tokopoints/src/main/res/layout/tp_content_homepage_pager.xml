<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_scrollFlags="snap"
    android:layout_marginTop="@dimen/tp_margin_medium"
    android:orientation="vertical">

    <com.tokopedia.design.component.Tabs
        android:id="@+id/tab_layout_promos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/tkpd_main_green"
        app:tabMode="scrollable"
        android:elevation="4dp"
        app:tabSelectedTextColor="@color/tkpd_main_green"
        app:tabTextAppearance="@style/Tabs.Main"
        app:tabTextColor="@color/black_38">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tp_label_exchange_points" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tp_label_my_coupon" />

    </com.tokopedia.design.component.Tabs>
</LinearLayout>