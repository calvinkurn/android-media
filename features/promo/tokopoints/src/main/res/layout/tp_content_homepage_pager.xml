<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_promos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/tkpd_main_green"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/tkpd_main_green"
        app:tabTextAppearance="@style/TokoPointsTabs"
        app:tabTextColor="@color/black_38">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kupon Saya" />

    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/text_count"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="@dimen/tp_margin_xsmall"
        android:layout_marginEnd="@dimen/tp_margin_medium"
        android:layout_marginRight="@dimen/tp_margin_medium"
        android:background="@drawable/tp_circle_green"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/tp_text_size_xsmall"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tab_layout_promos"
        app:layout_constraintEnd_toEndOf="@+id/tab_layout_promos"
        app:layout_constraintTop_toTopOf="@+id/tab_layout_promos" />
</androidx.constraintlayout.widget.ConstraintLayout>