<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/cl_flash_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:paddingStart="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:visibility="gone"
    tool:visibility="visible">

    <TextView
        android:id="@+id/tv_timer_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="Berakhir dalam:"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <ProgressBar
        android:id="@+id/progress_timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_20"
        android:indeterminate="false"
        android:progress="50"
        android:progressDrawable="@drawable/bg_tp_timer_bg"
        app:layout_constraintBottom_toBottomOf="@+id/tv_flash_time"
        app:layout_constraintLeft_toLeftOf="@+id/tv_flash_time"
        app:layout_constraintRight_toRightOf="@+id/tv_flash_time"
        app:layout_constraintTop_toTopOf="@+id/tv_flash_time" />

    <TextView
        android:id="@+id/tv_flash_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:textColor="@color/red_150"
        android:textSize="@dimen/sp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        tool:text="23:59:59" />
</android.support.constraint.ConstraintLayout>