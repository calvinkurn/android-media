<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title_carousel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_see_all_carousel"
        tools:text="Huge News!"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_see_all_carousel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:textColor="@color/Unify_G400"
        app:typographyType="heading_6"
        app:typographyWeight="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_carousel"
        tools:text="Lihat Semua"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_title_carousel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_6"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/text_title_carousel"
        app:layout_constraintStart_toStartOf="@+id/text_title_carousel"
        app:layout_constraintTop_toBottomOf="@+id/text_title_carousel"
        tools:text="Cari tahu sekarang juga" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_carousel_31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sub_title_carousel"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>