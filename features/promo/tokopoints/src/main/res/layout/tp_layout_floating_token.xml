<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_token_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/bg_tp_token_detail_text"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingEnd="@dimen/tp_margin_medium"
        android:paddingLeft="50dp"
        android:paddingRight="@dimen/tp_margin_medium"
        android:paddingStart="50dp"
        android:paddingTop="10dp"
        android:shadowColor="@color/red_error"
        android:textColor="@color/black_54"
        android:textSize="@dimen/tp_text_size_small"
        app:layout_constraintBottom_toBottomOf="@+id/img_token"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_token" />

    <ImageView
        android:id="@+id/img_token"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/text_token_count"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle_red"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/tp_text_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/text_token_title"
        app:layout_constraintStart_toStartOf="@id/text_token_title"
        app:layout_constraintTop_toTopOf="@+id/text_token_title" />


</android.support.constraint.ConstraintLayout>