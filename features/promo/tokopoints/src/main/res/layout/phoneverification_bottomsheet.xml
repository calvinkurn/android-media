<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cancel_verifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:srcCompat="@drawable/ic_close_default"/>

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"
        app:remoteFileName="phone_verification.png"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_verifikasi" />

    <com.tokopedia.unifyprinciples.Typography
        android:textColor="@color/Unify_N700"
        app:typographyType="heading_2"
        android:id="@+id/title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:text="@string/tp_verifikasi_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv" />

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="body_2"
        android:id="@+id/desc"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/tp_phone_verification_desc"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_verifikasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tp_btn_verifikasi"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>