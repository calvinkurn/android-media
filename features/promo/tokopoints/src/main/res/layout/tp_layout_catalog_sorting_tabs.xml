<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.design.component.Tabs
        android:id="@+id/tab_layout_promos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:tabIndicatorColor="@color/tkpd_main_green"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/tkpd_main_green"
        app:tabTextAppearance="@style/Tabs.Main"
        app:tabTextColor="@color/black_38" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_promos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.constraint.ConstraintLayout>