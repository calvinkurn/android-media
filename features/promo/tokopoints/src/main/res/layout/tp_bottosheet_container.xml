<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/tp_padding_medium"
        android:paddingLeft="@dimen/tp_padding_medium"
        android:paddingRight="@dimen/tp_padding_medium"
        android:paddingStart="@dimen/tp_padding_medium"
        android:paddingBottom="@dimen/tp_padding_regular"
        android:paddingTop="@dimen/tp_padding_regular"
        android:textColor="@color/black_70"
        android:textSize="@dimen/tp_text_size_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/container_lob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tp_padding_medium"
        android:layout_marginLeft="@dimen/tp_padding_medium"
        android:layout_marginRight="@dimen/tp_padding_medium"
        android:layout_marginStart="@dimen/tp_padding_medium"
        android:layout_marginTop="@dimen/tp_margin_xsmall"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_description"
        app:layout_goneMarginTop="@dimen/tp_margin_small"></LinearLayout>

</android.support.constraint.ConstraintLayout>