<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_three">

    <ViewFlipper
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_three">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_promos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tp_margin_xsmall"
                android:layout_marginLeft="@dimen/tp_margin_xsmall"
                android:layout_marginTop="@dimen/tp_margin_xsmall"
                android:layout_marginEnd="@dimen/tp_margin_xsmall"
                android:layout_marginRight="@dimen/tp_margin_xsmall"
                android:layout_marginBottom="@dimen/tp_margin_xsmall"
                android:nestedScrollingEnabled="false"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/tp_item_coupon" />

            <TextView
                android:id="@+id/text_link_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tp_margin_medium"
                android:layout_marginTop="@dimen/tp_margin_medium"
                android:layout_marginRight="@dimen/tp_margin_medium"
                android:background="@drawable/bg_label_outline_grey"
                android:gravity="center"
                android:padding="@dimen/tp_margin_medium"
                android:text="@string/tp_label_see_all"
                android:textColor="@color/black_54"
                android:textSize="@dimen/tp_text_size_small" />

            <View
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:visibility="invisible" />
        </LinearLayout>

        <include layout="@layout/layout_tp_empty_catalog" />

    </ViewFlipper>

</android.support.v4.widget.NestedScrollView>