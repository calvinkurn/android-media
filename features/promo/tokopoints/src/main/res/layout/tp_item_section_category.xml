<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="64dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_2"
    android:layout_marginRight="@dimen/dp_2"
    android:layout_marginBottom="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/ic_squircle"
        android:padding="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_category_new"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_14"
        android:background="@drawable/bg_category_new"
        app:layout_constraintRight_toRightOf="@+id/iv_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingStart="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        android:textColor="@color/tp_loyalty_color"
        android:textSize="@dimen/tp_text_size_xxsmall"
        app:layout_constraintTop_toBottomOf="@+id/iv_bg"
        tools:text="Kupon Membership" />
</androidx.constraintlayout.widget.ConstraintLayout>