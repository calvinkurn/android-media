<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8"
        tools:background="@color/black">


        <TextView
            android:id="@+id/tv_tpToolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:textColor="@color/white"
            android:textSize="@dimen/tp_text_size_regular"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TokoPoint" />

        <ImageView
            android:id="@+id/iv_tpToolbar_leaderboard"
            android:layout_width="@dimen/tp_toolbar_icon_wh"
            android:layout_height="@dimen/tp_toolbar_icon_wh"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_8"
            android:padding="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_tpToolbar_coupon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_tpToolbar_coupon"
            android:layout_width="@dimen/tp_toolbar_icon_wh"
            android:layout_height="@dimen/tp_toolbar_icon_wh"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_8"
            android:padding="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_my_coupon_white" />

        <TextView
            android:id="@+id/tv_tpToolbar_couponCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@drawable/bg_tp_cr_red"
            android:textColor="@color/white"
            android:textSize="@dimen/tp_text_size_xxsmall"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/iv_tpToolbar_coupon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_tpToolbar_coupon"
            tools:text="999" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Toolbar>