<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/tp_margin_small"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/tp_padding_regular">

        <ImageView
            android:id="@+id/img_banner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/tp_padding_small"
            android:paddingLeft="@dimen/tp_padding_regular"
            android:paddingRight="@dimen/tp_padding_regular"
            android:paddingTop="@dimen/tp_padding_small"
            android:textColor="@color/black_70"
            android:textSize="@dimen/tp_text_size_xsmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_banner" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tp_padding_regular"
            android:layout_marginStart="@dimen/tp_padding_regular"
            android:layout_marginTop="@dimen/tp_padding_xsmall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_continue"
            app:srcCompat="@drawable/ic_time" />

        <TextView
            android:id="@+id/text_point_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tp_margin_regular"
            android:layout_marginStart="@dimen/tp_margin_regular"
            android:text="textxtxtua;"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/tp_text_size_small"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/img_label"
            app:layout_constraintStart_toEndOf="@+id/img_label"
            app:layout_constraintTop_toTopOf="@+id/img_label" />

        <TextView
            android:id="@+id/text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tp_margin_regular"
            android:layout_marginStart="@dimen/tp_margin_regular"
            android:text="@string/tp_label_valid_for"
            android:textColor="@color/black_38"
            android:textSize="@dimen/tp_text_size_xsmall"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/img_label"
            app:layout_constraintTop_toTopOf="@+id/button_continue" />

        <TextView
            android:id="@+id/text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tp_margin_regular"
            android:layout_marginStart="@dimen/tp_margin_regular"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/tp_text_size_small"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/img_label"
            app:layout_constraintTop_toBottomOf="@+id/text_label" />

        <TextView
            android:id="@+id/button_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/tp_margin_large"
            android:layout_marginRight="@dimen/tp_padding_regular"
            android:layout_marginTop="@dimen/tp_margin_small"
            android:background="@drawable/bg_button_primary"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/tp_padding_small"
            android:paddingLeft="@dimen/tp_margin_large"
            android:paddingRight="@dimen/tp_margin_large"
            android:paddingTop="@dimen/tp_padding_small"
            android:textColor="@color/white"
            android:textSize="@dimen/tp_text_size_xsmall"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_description" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>