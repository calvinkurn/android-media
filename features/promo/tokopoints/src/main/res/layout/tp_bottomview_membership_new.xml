<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_points_stack_bottom"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_tp_point_stack_new" />

    <TextView
        android:id="@+id/text_my_points_label_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_small"
        android:layout_marginLeft="@dimen/tp_margin_small"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/tp_label_see_point"
        android:textColor="@color/black_56"
        android:textSize="@dimen/tp_text_size_xxsmall"
        app:layout_constraintLeft_toRightOf="@+id/img_points_stack_bottom"
        app:layout_constraintStart_toEndOf="@+id/img_points_stack_bottom"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Points" />

    <TextView
        android:id="@+id/text_my_points_value_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_small"
        android:layout_marginLeft="@dimen/tp_margin_small"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/black_56"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_points_stack_bottom"
        app:layout_constraintStart_toEndOf="@+id/img_points_stack_bottom"
        app:layout_constraintTop_toBottomOf="@+id/text_my_points_label_bottom"
        tools:text="100.087" />

    <View
        android:id="@+id/line_separator_points_vertical_bottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@color/white_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_loyalty_stack_bottom"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/tp_margin_medium"
        android:layout_marginLeft="@dimen/tp_margin_medium"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line_separator_points_vertical_bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_tp_loyalty_stack_new" />

    <TextView
        android:id="@+id/text_loyalty_label_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_small"
        android:layout_marginLeft="@dimen/tp_margin_small"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_1"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/tp_label_see_loyalty"
        android:textColor="@color/black_56"
        android:textSize="@dimen/tp_text_size_xxsmall"
        app:layout_constraintStart_toEndOf="@+id/img_loyalty_stack_bottom"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_loyalty_value_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_small"
        android:layout_marginLeft="@dimen/tp_margin_small"
        android:layout_marginBottom="@dimen/dp_10"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/black_56"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_loyalty_stack_bottom"
        app:layout_constraintTop_toBottomOf="@+id/text_loyalty_label_bottom" />

    <View
        android:id="@+id/view_point_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/line_separator_points_vertical_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/line_separator_points_vertical_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_loyalty_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/line_separator_points_vertical_bottom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/line_separator_points_vertical_bottom"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

