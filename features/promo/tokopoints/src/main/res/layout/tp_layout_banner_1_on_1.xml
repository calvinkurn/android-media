<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/Unify_N700"
        android:textStyle="bold"
        android:typeface="serif"
        android:visibility="gone"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="heading_6"
        app:typographyWeight="bold"
        tools:text="Huge News!"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_see_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Lihat Semua"
        android:textColor="@color/Unify_G400"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="heading_6"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/Unify_N700_68"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:typographyType="heading_6"
        tools:text="Cari tahu sekarang juga" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_tp_section_border"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sub_title"
        app:unify_image_corner_radius="8" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/Unify_N0"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/img_banner"
        app:layout_constraintStart_toStartOf="@+id/img_banner"
        app:layout_constraintTop_toTopOf="@+id/img_banner"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        tools:text="Title in banner" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_title_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/Unify_N0"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/text_title_banner"
        app:layout_constraintStart_toStartOf="@+id/text_title_banner"
        app:layout_constraintTop_toBottomOf="@+id/text_title_banner"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Subtitle in banner" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/Unify_N700_96"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_banner"
        app:typographyType="heading_4"
        tools:text="Subtitle in banner Subtitle in banner Subtit  ubtitle in banner Subtitle i" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_title_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_68"
        android:visibility="gone"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_bottom"
        app:typographyType="heading_6"
        tools:text="Subtitle in banner Subtitle in banner Subtitle in banner Subtitle in banner   banner Subtitle in banner Subtitle in banner Subtitle in banner  banner Subtitle in banner Subtitle in banner Subtitle in banner" />

</androidx.constraintlayout.widget.ConstraintLayout>
