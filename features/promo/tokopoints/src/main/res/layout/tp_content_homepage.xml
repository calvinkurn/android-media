<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    app:layout_scrollFlags="scroll">

    <ImageView
        android:id="@+id/img_egg"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/tp_margin_medium"
        android:layout_marginLeft="@dimen/tp_margin_medium"
        android:layout_marginTop="@dimen/tp_margin_medium"
        android:contentDescription="@string/tp_label_see_loyalty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_membership_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_regular"
        android:layout_marginLeft="@dimen/tp_margin_regular"
        android:layout_marginTop="@dimen/dp_4"
        android:text="@string/tp_label_membership"
        android:textColor="@color/black_38"
        android:textSize="@dimen/tp_text_size_xsmall"
        app:layout_constraintStart_toEndOf="@+id/img_egg"
        app:layout_constraintTop_toTopOf="@+id/img_egg" />

    <TextView
        android:id="@+id/text_membership_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_regular"
        android:layout_marginLeft="@dimen/tp_margin_regular"
        android:layout_marginBottom="@dimen/dp_4"
        android:drawableRight="@drawable/ic_arrow_right_grey"
        android:drawablePadding="@dimen/dp_16"
        android:drawableTint="@color/medium_green"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:paddingEnd="@dimen/tp_padding_regular"
        android:paddingRight="@dimen/tp_padding_regular"
        android:textColor="@color/black_70"
        android:textSize="@dimen/tp_text_size_medium"
        app:layout_constraintBottom_toBottomOf="@+id/img_egg"
        app:layout_constraintStart_toEndOf="@+id/img_egg" />

    <View
        android:id="@+id/line_separator_egg"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/tp_margin_medium"
        android:background="@color/white_two"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_egg" />

    <View
        android:id="@+id/view_point_saya"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@color/white_three"
        app:layout_constraintBottom_toTopOf="@+id/line_separator_points_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/line_separator_points_vertical"
        app:layout_constraintTop_toTopOf="@+id/line_separator_egg" />

    <View
        android:id="@+id/view_loyalty_saya"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/white_three"
        app:layout_constraintBottom_toTopOf="@+id/line_separator_points_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/line_separator_points_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line_separator_egg" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_points_stack"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_separator_egg"
        app:srcCompat="@drawable/ic_tp_point_stack" />

    <TextView
        android:id="@+id/text_my_points_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_small"
        android:layout_marginLeft="@dimen/tp_margin_small"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_1"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/tp_label_see_point"
        android:textColor="@color/black_38"
        android:textSize="@dimen/tp_text_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/text_my_points_value"
        app:layout_constraintRight_toRightOf="@+id/line_separator_points_vertical"
        app:layout_constraintStart_toEndOf="@+id/text_my_points_value"
        tools:text="Points Points" />

    <TextView
        android:id="@+id/text_my_points_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_small"
        android:layout_marginLeft="@dimen/tp_margin_small"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/tp_text_size_regular"
        app:layout_constraintBottom_toBottomOf="@+id/img_points_stack"
        app:layout_constraintStart_toEndOf="@+id/img_points_stack"
        app:layout_constraintTop_toTopOf="@+id/img_points_stack"
        tools:text="100.087" />

    <View
        android:id="@+id/line_separator_points_vertical"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_36"
        android:background="@color/white_two"
        app:layout_constraintBottom_toBottomOf="@+id/line_separator_points_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line_separator_egg" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_loyalty_stack"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/tp_margin_medium"
        android:layout_marginLeft="@dimen/tp_margin_medium"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintStart_toEndOf="@+id/line_separator_points_vertical"
        app:layout_constraintTop_toBottomOf="@+id/line_separator_egg"
        app:srcCompat="@drawable/ic_tp_loyalty_stack" />

    <TextView
        android:id="@+id/text_loyalty_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_small"
        android:layout_marginLeft="@dimen/tp_margin_small"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_1"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/tp_label_see_loyalty"
        android:textColor="@color/black_38"
        android:textSize="@dimen/tp_text_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/text_loyalty_value"
        app:layout_constraintRight_toRightOf="@+id/view_loyalty_saya"
        app:layout_constraintStart_toEndOf="@+id/text_loyalty_value" />

    <TextView
        android:id="@+id/text_loyalty_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_small"
        android:layout_marginLeft="@dimen/tp_margin_small"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/tp_text_size_regular"
        app:layout_constraintBottom_toBottomOf="@+id/img_loyalty_stack"
        app:layout_constraintStart_toEndOf="@+id/img_loyalty_stack"
        app:layout_constraintTop_toTopOf="@+id/img_loyalty_stack"
        tools:text="20.099" />

    <View
        android:id="@+id/line_separator_points_horizontal"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/tp_margin_regular"
        android:background="@color/white_two"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_my_points_value" />


    <include layout="@layout/tp_dynamic_link" />


    <include layout="@layout/tp_layout_ticker" />
</android.support.constraint.ConstraintLayout>
