<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:layout_scrollFlags="scroll">

    <ImageView
        android:id="@+id/img_bg_header"
        android:layout_width="0dp"
        android:layout_height="192dp"
        android:scaleType="fitXY"
        android:src="@drawable/temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_egg"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/tp_margin_medium"
        android:layout_marginLeft="@dimen/tp_margin_medium"
        android:layout_marginTop="@dimen/tp_margin_medium"
        android:contentDescription="@string/tp_label_see_loyalty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_membership_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_regular"
        android:layout_marginLeft="@dimen/tp_margin_regular"
        android:layout_marginTop="@dimen/dp_4"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textSize="@dimen/tp_text_size_medium"
        app:layout_constraintStart_toEndOf="@+id/img_egg"
        app:layout_constraintTop_toTopOf="@+id/img_egg"
        tools:text="Gulfikar Rinjani" />

    <TextView
        android:id="@+id/text_membership_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tp_margin_regular"
        android:layout_marginLeft="@dimen/tp_margin_regular"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_4"
        android:drawableRight="@drawable/ic_arrow_right_grey"
        android:drawablePadding="@dimen/dp_16"
        android:drawableTint="@color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="@dimen/tp_padding_regular"
        android:paddingRight="@dimen/tp_padding_regular"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/tp_text_size_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/img_egg"
        app:layout_constraintStart_toEndOf="@+id/img_egg"
        app:layout_constraintTop_toBottomOf="@+id/text_membership_label"
        tools:text="Classic Member" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_membership_value">

        <include layout="@layout/tp_home_point" />

    </android.support.v7.widget.CardView>

    <include layout="@layout/tp_layout_section_category_parent" />

    <include layout="@layout/tp_layout_ticker" />

</android.support.constraint.ConstraintLayout>
