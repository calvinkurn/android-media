<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_tp_category_bubble_selected"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/tp_padding_regular"
    android:paddingEnd="@dimen/tp_padding_regular"
    android:paddingLeft="@dimen/tp_padding_regular"
    android:paddingRight="@dimen/tp_padding_regular"
    android:paddingStart="@dimen/tp_padding_regular"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:layout_marginLeft="@dimen/tp_margin_xsmall"
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" />

</LinearLayout>

