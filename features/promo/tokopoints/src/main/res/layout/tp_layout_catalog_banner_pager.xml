<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_pager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_banner"
        android:layout_width="0dp"
        android:layout_height="112dp"
        android:layout_marginTop="@dimen/tp_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifycomponents.PageControl
        android:id="@+id/page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tp_margin_xsmall"
        android:padding="@dimen/tp_padding_small"
        app:layout_constraintBottom_toBottomOf="@+id/view_pager_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:indicator_color="@color/Unify_N200_32"
        />

</androidx.constraintlayout.widget.ConstraintLayout>