<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_dynamic_action"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_12"
    android:paddingBottom="@dimen/dp_12"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/holder_tokomember"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/holder_bbo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/image_tokomember"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_12"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="45dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_tokomember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:lineSpacingExtra="2sp"
                android:lines="1"
                android:textColor="@color/Unify_N700_68"
                android:translationY="-1.03sp"
                app:typographyType="body_3"
                tools:text="Tokomember" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/label_tokomember2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:lineSpacingExtra="2sp"
                    android:lines="1"
                    android:textColor="@color/Unify_N700_96"
                    android:translationY="-1.03sp"
                    android:visibility="visible"
                    app:typographyType="heading_5"
                    app:typographyWeight="bold"
                    tools:text="22 Coupon" />

                <com.tokopedia.unifycomponents.NotificationUnify
                    android:id="@+id/notif_tokomember"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_4"
                    android:gravity="center"
                    android:visibility="gone"
                    app:notificationColor="color_primary"
                    app:notificationType="none_type" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/holder_bbo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/holder_tokomember"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/image_bbo"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="45dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_bbo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:lineSpacingExtra="2sp"
                android:lines="1"
                android:textColor="@color/Unify_N700_68"
                android:translationY="-1.03sp"
                app:typographyType="body_3"
                tools:text="Tokomember" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/label_bbo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:lineSpacingExtra="2sp"
                    android:lines="1"
                    android:textColor="@color/Unify_N700_96"
                    android:translationY="-1.03sp"
                    android:visibility="visible"
                    app:typographyType="heading_5"
                    app:typographyWeight="bold"
                    tools:text="22 Coupon" />

                <com.tokopedia.unifycomponents.NotificationUnify
                    android:id="@+id/notif_bbo"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_4"
                    android:gravity="center"
                    android:visibility="gone"
                    app:notificationColor="color_primary"
                    app:notificationType="none_type" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/holder_tokopoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/holder_topquest"
        app:layout_constraintTop_toTopOf="@id/holder_topquest"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_tokopoint"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="45dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_tokopoint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:lineSpacingExtra="2sp"
                android:lines="1"
                android:textColor="@color/Unify_N700_68"
                android:translationY="-1.03sp"
                app:typographyType="body_3"
                tools:text="Tokopoint" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/label_tokopoint2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:lineSpacingExtra="2sp"
                    android:lines="1"
                    android:textColor="@color/Unify_N700_96"
                    android:translationY="-1.03sp"
                    android:visibility="visible"
                    app:typographyType="heading_5"
                    app:typographyWeight="bold"
                    tools:text="99 Member" />

                <com.tokopedia.unifycomponents.NotificationUnify
                    android:id="@+id/notif_tokopoint"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_4"
                    android:textSize="@dimen/tp_text_size_xxsmall"
                    android:visibility="gone"
                    app:notificationColor="color_primary"
                    app:notificationTitle="3"
                    app:notificationType="none_type" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/holder_topquest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/card_dynamic_action"
        app:layout_constraintEnd_toStartOf="@+id/holder_tokopoint"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/holder_tokomember"
        tools:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_12">

            <ImageView
                android:id="@+id/image_topquest"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="45dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_topquest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:lineSpacingExtra="2sp"
                android:lines="1"
                android:textColor="@color/Unify_N700_68"
                android:translationY="-1.03sp"
                app:typographyType="body_3"
                tools:text="Voucher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/label_topquest2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:lineSpacingExtra="2sp"
                    android:lines="1"
                    android:textColor="@color/Unify_N700_96"
                    android:translationY="-1.03sp"
                    android:visibility="visible"
                    app:typographyType="heading_5"
                    app:typographyWeight="bold"
                    tools:text="2 Quest" />

                <com.tokopedia.unifycomponents.NotificationUnify
                    android:id="@+id/notif_topquest"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_4"
                    android:gravity="center"
                    android:visibility="gone"
                    app:notificationColor="color_primary"
                    app:notificationType="none_type" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
