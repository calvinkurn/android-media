<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white">

    <ViewFlipper
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:measureAllChildren="false">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/tp_margin_large" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:elevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_scrollFlags="scroll">

                    <include layout="@layout/tp_layout_catalog_header" />

                    <include layout="@layout/tp_layout_catalog_banner_pager" />
                </LinearLayout>


            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <com.tokopedia.design.component.Tabs
                        android:id="@+id/tabs_sort_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabIndicatorColor="@color/tkpd_main_green"
                        app:tabMode="scrollable"
                        app:tabSelectedTextColor="@color/tkpd_main_green"
                        app:tabTextAppearance="@style/TokoPointsTabs"
                        app:tabTextColor="@color/black_38" />
                </com.google.android.material.appbar.AppBarLayout>

                <include layout="@layout/tp_layout_catalog_flash_timer" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager_sort_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_fab_egg_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/tp_margin_large"
                android:background="@color/transparent"
                android:visibility="gone"
                app:layout_behavior="com.tokopedia.tokopoints.view.util.QuickReturnFloaterBehavior">

                <include layout="@layout/tp_layout_floating_token" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_view_membership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/tp_bottomview_membership" />
            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <com.tokopedia.tokopoints.view.customview.ServerErrorView
            android:id="@+id/server_error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ViewFlipper>
</FrameLayout>
