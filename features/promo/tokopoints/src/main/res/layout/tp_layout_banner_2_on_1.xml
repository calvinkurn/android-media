<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:paddingBottom="@dimen/unify_space_16"
    android:paddingRight="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/Unify_NN950_96"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        android:visibility="gone"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        tools:text="Huge News!" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_see_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/tp_label_see_all"
        android:textColor="@color/Unify_GN500"
        app:typographyType="heading_6"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/Unify_NN950_68"
        app:typographyType="body_3"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        tools:text="Cari tahu sekarang juga" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_tp_section_border"
        app:layout_constraintDimensionRatio="h,2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_sub_title"
        app:unify_image_corner_radius="8" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/Unify_NN0"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/img_banner"
        app:layout_constraintStart_toStartOf="@+id/img_banner"
        app:layout_constraintTop_toTopOf="@+id/img_banner"
        app:layout_constraintWidth_default="wrap"
        tools:text="Title in banner" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_title_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/Unify_NN0"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="@+id/text_title_banner"
        app:layout_constraintStart_toStartOf="@+id/text_title_banner"
        app:layout_constraintTop_toBottomOf="@+id/text_title_banner"
        app:layout_constraintWidth_default="wrap"
        tools:text="Subtitle in banner" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/Unify_NN950_96"
        android:visibility="gone"
        app:typographyType="heading_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_banner"
        tools:text="Subtitle in banner Subtitle in banner Subtit  ubtitle in banner Subtitle i" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_sub_title_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/Unify_NN950_68"
        app:typographyType="small"
        android:visibility="gone"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_bottom"
        tools:text="Subtitle in banner Subtitle in banner Subtitle in banner Subtitle in banner   banner Subtitle in banner Subtitle in banner Subtitle in banner  banner Subtitle in banner Subtitle in banner Subtitle in banner" />

</androidx.constraintlayout.widget.ConstraintLayout>

