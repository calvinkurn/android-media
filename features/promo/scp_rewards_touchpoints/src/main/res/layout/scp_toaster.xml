<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutToaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scp_rewards_toaster_bg_normal">
        
        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/frame_icon"
            android:src="@drawable/scp_toaster_solar_flare"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/scp_toaster_badge_icon"
            android:id="@+id/iv_icon"
            app:layout_constraintStart_toStartOf="@id/frame_icon"
            app:layout_constraintEnd_toEndOf="@id/frame_icon"
            app:layout_constraintTop_toTopOf="@id/frame_icon"
            app:layout_constraintBottom_toBottomOf="@id/frame_icon"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="@dimen/toaster_text_horizontal_padding"
            app:layout_constraintStart_toEndOf="@id/frame_icon"
            app:layout_constraintTop_toTopOf="@id/frame_icon"
            app:layout_constraintBottom_toBottomOf="@id/frame_icon">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/scp_toaster_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ada medali baru buatmu!"
            app:typographyType="display_2"
            android:textColor="@color/toaster_text_color"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/scp_toaster_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jagoan Rumah Tangga Unilever"
            app:typographyType="display_3"
            android:textColor="@color/toaster_text_color"/>

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/snackbar_btn"
            android:minWidth="0dp"
            android:layout_marginEnd="16dp"
            android:text="Cek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            android:textColor="@color/toaster_text_color"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:maxWidth="@dimen/toaster_max_width"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>