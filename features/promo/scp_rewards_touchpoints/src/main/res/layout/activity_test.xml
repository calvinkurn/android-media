<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/test_root"
    android:background="@android:color/transparent"
    tools:context="com.tokopedia.scp_rewards_touchpoints.TestActivity">

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:unifyButtonType="transaction"
        android:id="@+id/btn_bs"
        android:text="Open Bottomsheet"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_toaster"
        app:unifyButtonType="transaction"
        android:text="Show Toaster"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_bs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>