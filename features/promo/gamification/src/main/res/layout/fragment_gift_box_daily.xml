<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fmParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <FrameLayout
            android:id="@+id/giftBoxParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.gamification.giftbox.presentation.views.GiftBoxDailyView
                android:id="@+id/gift_box_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.tokopedia.gamification.giftbox.presentation.views.StarsContainer
                android:id="@+id/starsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.tokopedia.gamification.giftbox.presentation.views.RewardContainer
                android:id="@+id/reward_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include layout="@layout/gf_gift_tap_hint"/>

            <LinearLayout
                android:id="@+id/ll_benefits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_32"
                android:orientation="vertical"
                tools:alpha="1">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tvBenefits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/white"
                    app:typographyType="body_2"
                    app:typographyWeight="bold"
                    tools:text="Hadiah yang bisa kamu dapatkan:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_32"
                    android:layout_marginLeft="@dimen/dp_32"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_32"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.tokopedia.gamification.giftbox.presentation.views.GiftPrizeSmallView
                        android:id="@+id/giftPrizeSmallViewFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:background="@drawable/gf_bg_benefit_small"
                        tools:layout_height="46dp" />

                    <com.tokopedia.gamification.giftbox.presentation.views.GiftPrizeSmallView
                        android:id="@+id/giftPrizeSmallViewSecond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_weight="1"
                        android:visibility="gone"
                        tools:background="@drawable/gf_bg_benefit_small"
                        tools:layout_height="46dp" />
                </LinearLayout>

                <com.tokopedia.gamification.giftbox.presentation.views.GiftPrizeLargeView
                    android:id="@+id/giftPrizeLargeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:visibility="gone"
                    tools:background="@drawable/gf_bg_large_benefit"
                    tools:layout_height="80dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reward_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_16"
                tools:alpha="1">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tvRewardFirstLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:textColor="@android:color/white"
                    app:typographyType="heading_5"
                    app:typographyWeight="bold"
                    tools:text="Yay, kamu dapat hadia" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tvRewardSecondLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_horizontal"
                    android:text="@string/gami_kupon_undian_100_ovo_points"
                    android:textColor="@android:color/white"
                    app:typographyType="heading_2"
                    app:typographyWeight="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gf_bg_orange_3d"
                    android:fontFamily="sans-serif"
                    android:paddingStart="@dimen/dp_64"
                    android:paddingLeft="@dimen/dp_64"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_64"
                    android:paddingRight="@dimen/dp_64"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="@string/gami_palai_kupon_ovo_points" />

                <RelativeLayout
                    android:id="@+id/reminderLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/gami_bg_benefit_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tvReminderMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toStartOf="@id/fmReminder"
                        android:layout_toLeftOf="@id/fmReminder"
                        android:textColor="@android:color/white"
                        app:typographyType="body_3"
                        app:typographyWeight="reguler"
                        tools:text="Besok bisa dapet hadiah lagi lho. Mau diingetin?" />

                    <FrameLayout
                        android:id="@+id/fmReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/gf_bg_green_3d">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReminderBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="7dp"
                            android:paddingEnd="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="7dp"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            app:fontFamily="sans-serif"
                            tools:text="Ingatkan Besok" />

                        <com.tokopedia.unifycomponents.LoaderUnify
                            android:id="@+id/loaderReminder"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center" />
                    </FrameLayout>

                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/llLoader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loader"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_gravity="center" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvLoaderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"
                android:gravity="center"
                android:text="Beli ketupat, beli pepaya"
                android:textColor="@color/gf_loader_title_color"
                app:typographyType="heading_3"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvLoaderMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_18"
                android:gravity="center"
                android:text="Penasaran bakal dapat hadiah apa, ya?"
                android:textColor="@color/gf_loader_message_color"
                app:typographyType="heading_5"
                app:typographyWeight="reguler" />
        </LinearLayout>
    </ViewFlipper>

    <include layout="@layout/gami_gift_box_toolbar" />
</FrameLayout>