<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/gf_ic_gift_background" />

    <FrameLayout
        android:id="@+id/fm_gift_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:src="@drawable/gf_ic_box_shadow"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/ll_gift_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_gift_box_lid"
                android:layout_width="250dp"
                android:layout_height="100dp"
                tools:srcCompat="@drawable/gf_ic_lid_frame_7" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_box_front"
                android:layout_width="161dp"
                android:layout_height="74dp"
                android:layout_below="@id/image_gift_box_lid"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                tools:src="@drawable/kejutan_box" />


        </RelativeLayout>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_flat_glow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        app:srcCompat="@drawable/gf_ic_box_stage_glow"
        tools:visibility="visible" />

</FrameLayout>