<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:src="@drawable/bg_egg"/>

    <LinearLayout
        android:id="@+id/layout_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/text_info_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_info_crack_egg"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:layout_marginLeft="@dimen/margin_vl"
            android:layout_marginRight="@dimen/margin_vl"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_info_crack_egg"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_small"
            tools:text="@string/default_info_token_text_crack" />

        <TextView
            android:id="@+id/text_countdown_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_countdown_timer"
            android:paddingBottom="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_countdown_timer"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="12:00:00" />

    </LinearLayout>

    <com.tokopedia.gamification.cracktoken.compoundview.WidgetTokenView
        android:id="@+id/widget_token_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.tokopedia.gamification.cracktoken.compoundview.WidgetRemainingToken
        android:id="@+id/widget_remaining_token_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:visibility="gone"/>

    <com.tokopedia.gamification.cracktoken.compoundview.WidgetCrackResult
        android:id="@+id/widget_reward"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.tokopedia.gamification.cracktoken.compoundview.WidgetTokenOnBoarding
        android:id="@+id/widget_token_onboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>