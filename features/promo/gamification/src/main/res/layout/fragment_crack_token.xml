<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_special_egg">

    <TextView
        android:id="@+id/text_countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_bottom_text_countdown_timer"
        android:background="@drawable/bg_countdown_timer"
        android:layout_above="@+id/widget_token_view"
        android:paddingBottom="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_countdown_timer"
        android:textStyle="bold"
        tools:text="12:00:00" />

    <com.tokopedia.gamification.cracktoken.presentation.compoundview.WidgetTokenView
        android:layout_centerInParent="true"
        android:id="@+id/widget_token_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.gamification.cracktoken.presentation.compoundview.WidgetRemainingToken
        android:id="@+id/widget_remaining_token_view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.gamification.cracktoken.presentation.compoundview.WidgetCrackResult
        android:id="@+id/widget_reward"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>