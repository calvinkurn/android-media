<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_container">

    <ImageView
        android:id="@+id/iv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:src="@drawable/bg_special_egg"/>

    <TextView
        android:id="@+id/text_countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_countdown_timer"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_countdown_timer"
        android:textStyle="bold"
        tools:text="12:00:00"
        android:visibility="gone"
        tools:visibility="visible"/>

    <com.tokopedia.gamification.cracktoken.compoundview.WidgetTokenView
        android:id="@+id/widget_token_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.tokopedia.gamification.cracktoken.compoundview.WidgetRemainingToken
        android:id="@+id/widget_remaining_token_view"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

    <com.tokopedia.gamification.cracktoken.compoundview.WidgetCrackResult
        android:id="@+id/widget_reward"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>