<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background_view_reward"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/font_black_primary_70"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/close_reward"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_gravity="top|end"
        app:srcCompat="@drawable/ic_close_white"
        android:layout_margin="@dimen/dp_12"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_bg_reward"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="bottom|center"
                android:src="@drawable/bg_light_reward"
                android:visibility="gone"
                tools:visibility="visible"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_reward"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="bottom|center"
                tools:src="@drawable/ic_empty_egg"
                android:visibility="gone"
                tools:visibility="visible"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/container_text_reward"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/dp_16"
            android:gravity="top|center"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_crack_result_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_reward_label"
                tools:text="Selamat anda mendapatkan"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/view_list_reward_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_return"
                style="@style/Button.Submit.Green"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_32"
                android:textSize="@dimen/text_size_cta_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Cek dan Gunakan Hadiah Anda" />

            <TextView
                android:id="@+id/button_cta"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_32"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_cta_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Cek dan Gunakan Hadiah Anda" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>