<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vg_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/vg_floating_egg"
        android:layout_width="@dimen/floating_egg_widget_width"
        android:layout_height="@dimen/floating_egg_widget_height">
        <FrameLayout
            android:id="@+id/egg_counter_timer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_floating_egg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:adjustViewBounds="true"
                tools:src="@drawable/ic_empty_egg"/>

            <TextView
                android:id="@+id/tv_floating_counter"
                style="@style/TextView.Micro"
                android:layout_width="@dimen/floating_counter_width"
                android:layout_height="@dimen/floating_counter_width"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/circle_red_shadow"
                android:gravity="center"
                android:textColor="@color/white"
                tools:text="99+"/>

            <TextView
                android:id="@+id/tv_floating_timer"
                style="@style/TextView.Small.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:background="@drawable/bg_countdown_timer_thin"
                android:gravity="center"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:textColor="@color/yellow"
                tools:text="01:12:12"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/minimize_img_left"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:visibility="invisible"
            android:layout_gravity="center_vertical|start"
            android:background="@drawable/minimize_button"/>
    </FrameLayout>
</FrameLayout>