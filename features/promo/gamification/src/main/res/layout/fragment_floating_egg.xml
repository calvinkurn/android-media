<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vg_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/vg_floating_egg"
        android:layout_width="@dimen/floating_egg_widget_width"
        android:layout_height="@dimen/floating_egg_widget_height">
        <ImageView
            android:id="@+id/iv_floating_egg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/new_margin_tiny"
            android:layout_marginRight="@dimen/new_margin_tiny"/>

        <TextView
            android:id="@+id/tv_floating_counter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:text="99+"
            android:layout_gravity="top|end"
            android:gravity="center"
            style="@style/TextView.Small.Bold"
            android:background="@drawable/circle_red_shadow"
            android:textColor="@color/white"
            android:padding="@dimen/new_margin_small" />

        <TextView
            android:id="@+id/tv_floating_timer"
            style="@style/TextView.Small.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_countdown_timer_thin"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_vvvs"
            android:paddingTop="@dimen/padding_vvvs"
            android:textColor="@color/yellow"
            tools:text="01:12:12" />
    </FrameLayout>
</FrameLayout>