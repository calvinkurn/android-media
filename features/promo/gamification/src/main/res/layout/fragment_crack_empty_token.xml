<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:background="@drawable/bg_egg">

    <TextView
        android:id="@+id/text_info_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_info_crack_egg"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_info_crack_egg"
        android:textStyle="bold"
        tools:text="@string/empty_token_text_crack" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_full"
        android:layout_width="@dimen/width_egg"
        android:layout_height="@dimen/height_egg"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_empty_egg" />

    <Button
        android:id="@+id/get_more_token_button"
        style="@style/Button.Submit.Green"
        android:layout_gravity="bottom"
        android:textSize="@dimen/sp_14"
        android:text="@string/get_more_token_btn_text" />

</FrameLayout>