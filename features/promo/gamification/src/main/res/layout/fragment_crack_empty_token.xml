<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/bg_egg"/>



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/empty_lucky_egg"
        android:layout_width="@dimen/width_egg"
        android:layout_height="@dimen/height_egg"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_empty_egg"/>

    <Button
        android:id="@+id/get_more_token_button"
        style="@style/Button.Submit.Green.Rounded"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_16"
        tools:text="@string/get_more_token_btn_text"
        android:textSize="@dimen/sp_14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_64"
        android:orientation="vertical">

        <com.tokopedia.gamification.cracktoken.compoundview.WidgetRewardCrackResult
            android:id="@+id/widget_rewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_info_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/bg_info_crack_egg"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_32"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_32"
            android:paddingBottom="@dimen/dp_8"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_info_crack_egg"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="@string/default_info_token_text_crack"
            tools:visibility="visible" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:background="@color/toolbar_color"
        app:contentInsetStartWithNavigation="0dp"
        app:subtitleTextAppearance="?subtitleTextAppearance"
        app:titleTextAppearance="?titleTextAppearance">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/sp_17"
                android:textStyle="normal" />

            <FrameLayout
                android:id="@+id/fl_remaining_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="@dimen/dp_16"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_remaining_token"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_margin="@dimen/dp_8"
                    tools:src="@drawable/ic_empty_egg" />

                <TextView
                    android:id="@+id/tv_floating_counter"
                    style="@style/TextView.Micro10"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="top|end"
                    android:background="@drawable/circle_red_shadow"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:text="99+" />
            </FrameLayout>

        </FrameLayout>


    </androidx.appcompat.widget.Toolbar>


</FrameLayout>