<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/new_margin_small"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/new_margin_small"
    tools:background="#DD00DD">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_remaining_token"
            android:layout_width="@dimen/image_width_l"
            android:layout_height="@dimen/image_width_l"
            android:layout_margin="@dimen/new_margin_small"
            tools:src="@drawable/special" />

        <TextView
            android:id="@+id/tv_floating_counter"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="top|end"
            android:textColor="@color/white"
            style="@style/TextView.Micro"
            android:gravity="center"
            android:background="@drawable/circle_red_shadow"
            tools:text="99+"/>
    </FrameLayout>

    <TextView
        android:id="@+id/text_remaining_token"
        style="@style/TextView.Title.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/white"
        tools:text="Ada 3 Lucky Egg siap dipecahkan" />

</FrameLayout>
