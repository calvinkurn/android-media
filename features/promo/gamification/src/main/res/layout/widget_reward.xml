<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background_view_reward"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_bg_reward"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_light_reward"
        android:visibility="gone"
        tools:visibility="visible"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image_reward"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        tools:src="@drawable/coupon"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/container_text_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_container_text_reward"
        android:padding="16dp"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_reward_label"
            android:text="Selamat anda mendapatkan"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/view_list_reward_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_cta"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Cek dan Gunakan Hadiah Anda" />

    </LinearLayout>

</RelativeLayout>