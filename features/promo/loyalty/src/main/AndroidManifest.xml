<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokopedia.loyalty">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".view.activity.PromoDetailActivity"
            android:label="Promo Detail"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_promo"
                    android:path="@string/path_promo_detail" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.PromoListActivity"
            android:label="@string/title_activity_promo"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_promo"
                    android:path="@string/path_promo_list" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.LoyaltyActivity"
            android:label="Checkout"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <receiver
            android:name=".broadcastreceiver.TokoPointDrawerBroadcastReceiver"
            android:enabled="true"
            tools:ignore="ExportedReceiver" />
    </application>
</manifest>