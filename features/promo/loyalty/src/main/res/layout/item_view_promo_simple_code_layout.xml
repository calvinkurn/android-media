<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_outline_grey"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_promo_code_icon"
            android:layout_width="@dimen/promo_code_icon_width"
            android:layout_height="@dimen/promo_code_icon_height"
            android:layout_alignTop="@+id/tv_promo_code_label"
            app:srcCompat="@drawable/ic_coupon_promo"
            tools:ignore="ContentDescription" /> />

        <TextView
            android:id="@+id/tv_promo_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_promo_code_icon"
            android:layout_toRightOf="@id/iv_promo_code_icon"
            android:text="@string/label_promo_code_loyalty_module"
            android:textColor="@color/Unify_N700_68"
            android:textSize="14sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/iv_tooltip_info"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/tv_promo_code_label"
            android:layout_toRightOf="@id/tv_promo_code_label"
            app:srcCompat="@drawable/info_icon"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_promo_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/fl_single_code_group_layout"
            android:layout_width="@dimen/code_container_width"
            android:layout_height="@dimen/code_container_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_button_left">

            <TextView
                android:id="@+id/tv_single_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/Unify_R500"
                tools:text="BRIG6P" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_single_code_copy_layout"
            android:layout_width="@dimen/code_container_width"
            android:layout_height="@dimen/code_container_height"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/fl_single_code_group_layout"
            android:layout_toRightOf="@id/fl_single_code_group_layout"
            android:background="@drawable/round_button_right">

            <TextView
                android:id="@+id/tv_promo_code_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/label_copy_promo_code_loyalty_module"
                android:textColor="@color/Unify_N700_44" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>