<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="0dp"
            android:theme="?toolbarTheme"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:elevation="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:subtitleTextAppearance="?subtitleTextAppearance"
            app:titleTextAppearance="?titleTextAppearance">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shimmer_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="@string/title_activity_promo"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/shimmer_back"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_2"
                tools:layout_height="56dp" />
        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/Unify_N0"
            app:tabIndicatorColor="@color/Unify_G500"
            app:tabIndicatorHeight="3dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/Unify_G500"
            app:tabTextAppearance="@style/CustomTitlePageIndicatorLoyalty"
            app:tabTextColor="@color/Unify_NN600"
            tools:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Unify_N75" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.tokopedia.loyalty.view.widget.TouchViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/global_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" />

    <include
        android:id="@+id/shimmer_layout"
        layout="@layout/loyalty_shimmer" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>