<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_outline_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.loyalty.view.compoundview.PromoImageView
            android:id="@+id/iv_promo_detail_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_promo_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_20"
            android:textAlignment="center"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_18"
            tools:text="Temukan Teknologi Andalan dalam Genggaman dengan LG G6 Plus &amp; LG Q6 Plus, Dapatkan Potongan Harga dan Bonusnya!" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_promo_detail_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/white"
        app:layout_anchor="@id/iv_promo_detail_thumbnail"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/ic_share_android" />

</android.support.design.widget.CoordinatorLayout>