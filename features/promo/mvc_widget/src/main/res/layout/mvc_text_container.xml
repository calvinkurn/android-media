<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:elevation="@dimen/mvc_shadow_elevation"
    android:id="@+id/mvc_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:layout_marginStart="@dimen/dp_0"
    android:layout_marginEnd="@dimen/dp_0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.mvcwidget.views.SquareImageView
        android:id="@+id/image_coupon"
        android:layout_width="@dimen/dp_48"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="@dimen/dp_48"
        tools:src="@color/Unify_Y500" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_6"
        android:lines="1"
        android:textColor="@color/Unify_N700"
        app:layout_constraintLeft_toRightOf="@id/image_coupon"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Ada Cashback hingga Rp100.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:typographyType="body_3"
        android:textColor="@color/Unify_N700"
        tools:text="Masih ada 6 Kupon Toko lainnya!" />
</androidx.constraintlayout.widget.ConstraintLayout>