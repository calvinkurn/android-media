<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0">

    <ViewFlipper
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:orientation="vertical">

        <include layout="@layout/mvc_multishoplist_shimmer" />

        <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_merchant_couponlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:itemCount="21"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:spanCount="3" />
            </LinearLayout>

        </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

        <com.tokopedia.globalerror.GlobalError
            android:id="@+id/server_error_view"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent" />

        <include layout="@layout/mvc_notfound_error" />
    </ViewFlipper>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:elevation="@dimen/dp_0"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="left|bottom"
            app:expandedTitleMarginBottom="@dimen/dp_8"
            app:expandedTitleMarginStart="0dp"
            app:layout_scrollFlags="noScroll">

            <com.tokopedia.mvcwidget.customview.MerchantRewardToolbar
                android:id="@+id/toolbar_merchant"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="pin" />

            <View
                android:id="@+id/status_bar_bg"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:alpha="0"
                android:background="@color/Unify_G500"
                android:visibility="visible"
                app:layout_anchor="@id/list"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>