<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_4"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:id="@+id/vgVoucherView">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.65"
        android:orientation="vertical"
        android:padding="@dimen/dp_8"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivVoucherLogo"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                tools:src="@mipmap/ic_launcher"
                android:layout_marginRight="@dimen/dp_8" />
            <TextView
                android:id="@+id/tvVoucherTitle"
                android:singleLine="true"
                style="@style/TextView.Title.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="Cashback20Rb"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvVoucherDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            style="@style/TextView.Micro.BlackSecondary"
            tools:text="*Min Pembelian 250Rb"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_4">
        <TextView
            android:id="@+id/tvCode"
            style="@style/TextView.Title.OrangeRed.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            tools:text="CASHBACKLEB123"/>

        <Button
            android:id="@+id/btnUseVoucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button.Submit.White.Border"
            android:text="@string/use_voucher"
            android:minWidth="@dimen/dp_40"
            android:minHeight="@dimen/dp_8"
            android:padding="@dimen/dp_8"/>
    </LinearLayout>

</LinearLayout>