<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vgVoucherView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_85"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dp_72"
    android:orientation="horizontal"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"

        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_8">


        <TextView
            android:id="@+id/tvVoucherTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            tools:text="Cashback\n20Rb" />

        <TextView
            android:id="@+id/tvVoucherSubtitle"
            style="@style/TextView.Micro10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvVoucherTitle"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/clr_ae31353b"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Next Day (Rp 25.000)" />

        <TextView
            android:id="@+id/tvVoucherDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp_10"
            tools:text="*Min Pembelian 250Rb" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_voucher_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_8">

            <Button
                android:id="@+id/btnUseVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_voucher_button"
                android:layout_alignParentRight="true"
                android:minWidth="@dimen/dp_76"
                android:textAllCaps="false"
                android:minHeight="@dimen/dp_8"
                android:padding="@dimen/dp_8"
                android:text="@string/use_voucher"
                android:textColor="@color/text_color_voucher_button"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                tools:text="LGOFFICIFO" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>