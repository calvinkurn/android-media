<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/viewContainer"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderCircle1"
            android:layout_width="@dimen/unify_space_64"
            android:layout_height="@dimen/unify_space_64"
            android:layout_marginEnd="@dimen/unify_space_16"
            app:layout_constraintEnd_toStartOf="@+id/loaderCircle2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="circle" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderCircle2"
            android:layout_width="@dimen/unify_space_64"
            android:layout_height="@dimen/unify_space_64"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/loaderCircle1"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="circle" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderRect1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unify_space_16"
            android:layout_marginStart="@dimen/tm_dp_34"
            android:layout_marginTop="@dimen/tm_dp_34"
            android:layout_marginEnd="@dimen/tm_dp_34"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderCircle1"
            app:loader_type="rect" />


        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderRect2"
            android:layout_width="@dimen/tm_dp_190"
            android:layout_height="@dimen/unify_space_16"
            android:layout_marginStart="@dimen/tm_dp_34"
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/tm_dp_34"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderRect1"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderRect3"
            android:layout_width="@dimen/tm_dp_150"
            android:layout_height="@dimen/unify_space_16"
            android:layout_marginStart="@dimen/tm_dp_34"
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/tm_dp_34"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderRect2"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unify_space_48"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/tm_dp_34"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:layout_marginBottom="@dimen/unify_space_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loaderRect3"
            app:loader_type="rect" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/tm_bottomsheet_view"/>

</ViewFlipper>