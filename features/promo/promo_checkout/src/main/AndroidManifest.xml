<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.promocheckout">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".list.view.activity.PromoCheckoutListDigitalActivity"
            android:label="@string/activity_promo_list_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_promo"
                    android:path="@string/path_promo_list_digital" />
            </intent-filter>
        </activity>

        <activity
            android:name=".list.view.activity.PromoCheckoutListMarketplaceActivity"
            android:label="@string/activity_promo_list_title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".detail.view.activity.PromoCheckoutDetailMarketplaceActivity"
            android:label="@string/activity_promo_detail_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".detail.view.activity.PromoCheckoutDetailDigitalActivity"
            android:label="@string/activity_promo_detail_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_promo"
                    android:path="@string/path_promo_detail_digital" />
            </intent-filter>
        </activity>
    </application>
</manifest>
