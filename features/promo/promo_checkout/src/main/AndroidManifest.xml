<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.promocheckout">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".list.view.activity.PromoCheckoutListDigitalActivity"
            android:label="@string/activity_promo_list_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".list.view.activity.PromoCheckoutListMarketplaceActivity"
            android:label="@string/activity_promo_list_title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".detail.view.activity.PromoCheckoutDetailMarketplaceActivity"
            android:label="@string/activity_promo_detail_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
    </application>
</manifest>
