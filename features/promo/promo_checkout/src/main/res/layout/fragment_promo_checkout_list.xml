<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_parent_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="@dimen/dp_3">

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/header_product_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="@dimen/dp_3"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/white">

                    <com.tokopedia.design.text.TkpdHintTextInputLayout
                        android:id="@+id/textInputLayoutCoupon"
                        style="@style/HintTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/buttonUse"
                        android:hint="@string/promo_label_hint_promo_code"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/textInputCoupon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/promo_label_input_promo_code"
                            android:textColor="#ae31353b"
                            android:inputType="text" />

                    </com.tokopedia.design.text.TkpdHintTextInputLayout>

                    <TextView
                        style="@style/TextView.Micro.WhitePrimary"
                        android:id="@+id/buttonUse"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:background="@drawable/green_button_rounded"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:text="@string/promo_label_button_use" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/containerLastSeen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_16"
                android:visibility="gone"
                tools:visibility="gone">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:typographyType="heading_4"
                    android:visibility="visible"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/sp_6"
                    android:maxLines="2"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="@color/promo_checkout_catalogtitle_color"
                    android:text="@string/promo_title_category" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewLastSeenPromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_promo_last_seen" />
            </LinearLayout>

            <include
                android:id="@+id/container_exchnage_coupon"
                layout="@layout/fragment_list_exchange_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/TextView.Micro.BlackSecondary"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="@string/promo_label_my_coupon" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_16"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_list_promo_checkout"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>