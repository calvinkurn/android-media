<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/item_list_promo_checkout">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/imagePeriod"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/ic_period_promo_green" />

        <com.tokopedia.promocheckout.widget.TimerCheckoutWidget
            android:id="@+id/timerUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imagePeriod"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/containerUsageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imagePeriod"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlePeriod"
                style="@style/TextView.Micro10.BlackSecondary"
                android:text="@string/promo_title_period" />

            <TextView
                android:id="@+id/textPeriod"
                style="@style/TextView.Small.Bold"
                tools:text="16 Agu 2018" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/containerMinTrans"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16">

        <ImageView
            android:id="@+id/imageMinTrans"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/ic_voucher_promo_green" />

        <TextView
            android:id="@+id/titleMinTrans"
            style="@style/TextView.Micro10.BlackSecondary"
            android:layout_toRightOf="@+id/imageMinTrans"
            android:text="@string/promo_label_min_transaction" />

        <TextView
            android:id="@+id/textMinTrans"
            style="@style/TextView.Small.Bold"
            android:layout_below="@+id/titleMinTrans"
            android:layout_toRightOf="@+id/imageMinTrans"
            tools:text="Rp. 100.000" />
    </RelativeLayout>
</merge>