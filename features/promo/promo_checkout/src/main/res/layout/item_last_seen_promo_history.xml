<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/ticketPromoHistory"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tokopedia.promocheckout.customview.PromoTicketView
        android:layout_width="@dimen/promo_ticket_container_width"
        android:layout_height="110dp"
        app:backgroundcolor="@color/Unify_N0"
        app:borderwidth="2dp"
        app:cardheight="90dp"
        app:cornerradius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:offset="@dimen/promo_ticket_offset"
        app:offsetafter="90dp"
        app:scallopRadius="8dp"
        app:showborder="true" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="184dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleLastCard"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="22dp"
        android:textColor="@color/Unify_N700"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tool:text="Jangan Sampai Gaji Habis Di Awal Bula" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPromoCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="14dp"
        android:textColor="@color/Unify_Y500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/tvTitleLastCard"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleLastCard"
        app:typographyType="heading_6"
        tool:text="PAYLATER" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/btnGunakanLast"
        android:layout_width="76dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_gunakan_lastseen_card"
        android:gravity="center"
        android:text="Gunakan"
        android:textColor="@color/Unify_N0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5" />

</androidx.constraintlayout.widget.ConstraintLayout>


