<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/header_bottom_sheet_rounded_white"
    android:id="@+id/parent"
    app:elevation="0dp">

    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-6dp"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_banner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:src="@color/Unify_N700"
                app:layout_constraintDimensionRatio="h,3:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/top_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="16dp"
                android:background="@color/Unify_N50"
                app:layout_constraintLeft_toLeftOf="@+id/text_description"
                app:layout_constraintRight_toRightOf="@+id/text_description"
                app:layout_constraintTop_toBottomOf="@+id/titleMinTrans" />

            <View
                android:id="@+id/mid_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="16dp"
                android:background="@color/Unify_N50"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/tnc_see_more"
                app:layout_constraintRight_toRightOf="@+id/tnc_see_more"
                app:layout_constraintTop_toBottomOf="@+id/tnc_see_more" />

            <View
                android:id="@+id/bottom_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/Unify_N50"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/how_to_use_see_more"
                app:layout_constraintRight_toRightOf="@+id/how_to_use_see_more"
                app:layout_constraintTop_toBottomOf="@+id/how_to_use_see_more"
                app:layout_goneMarginBottom="8dp" />

            <WebView
                android:id="@+id/tnc_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:scrollbars="none"
                app:layout_constraintLeft_toLeftOf="@+id/tnc"
                app:layout_constraintRight_toRightOf="@+id/tnc"
                app:layout_constraintTop_toBottomOf="@+id/tnc" />

            <WebView
                android:id="@+id/how_to_use_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:scrollbars="none"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/how_to_use"
                app:layout_constraintRight_toRightOf="@+id/how_to_use"
                app:layout_constraintTop_toBottomOf="@+id/how_to_use" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_banner"
                app:typographyType="heading_4"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_quota_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/bg_red_rounded_discount"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="3dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:textColor="@color/Unify_R400"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_description"
                app:typographyType="small"
                app:typographyWeight="bold"
                android:layout_marginStart="16dp" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_disabled_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                tools:text="as;djfsaklfdj"
                android:textColor="@color/Unify_R600"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/text_quota_count"
                app:layout_constraintTop_toBottomOf="@+id/text_quota_count"
                app:typographyType="small" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/titleMinTrans"
                style="@style/TextView.Micro10.BlackSecondary"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_voucher_promo_green"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_quota_count"
                tools:text="tanpa minimum " />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/textMinTrans"
                style="@style/TextView.Small.Bold"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/Unify_N700_68"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/titleMinTrans"
                tools:text="Rp 3000000" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6sp"
                android:text="@string/promo_checkout_tnc"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintLeft_toLeftOf="@+id/top_separator"
                app:layout_constraintTop_toBottomOf="@+id/top_separator"
                app:typographyType="heading_4"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tnc_see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/Unify_G400"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/tnc_content"
                app:layout_constraintTop_toBottomOf="@+id/tnc_content"
                app:typographyType="body_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/how_to_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/Unify_N700_96"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/mid_separator"
                app:layout_constraintTop_toBottomOf="@+id/mid_separator"
                app:typographyType="heading_4"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/how_to_use_see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:paddingBottom="16dp"
                android:textColor="@color/Unify_G400"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/how_to_use_content"
                app:layout_constraintTop_toBottomOf="@+id/how_to_use_content"
                app:typographyType="body_2"
                app:typographyWeight="bold" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/catalog_bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <View
            android:id="@+id/top_shaded_view"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/bg_promo_shadow"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"
            tools:text=";laksdjf;alsjd"
            android:textColor="@color/Unify_N700_44"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/text_point_discount"
            app:layout_constraintTop_toTopOf="@+id/text_point_discount"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_red_rounded_discount"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            tools:text="14% OFF"
            android:textColor="@color/Unify_R400"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_value_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            tools:text=";lkdf;lkjsdnm"
            android:textColor="@color/Unify_Y500"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_point_discount"
            app:layout_goneMarginTop="24dp"
            app:typographyType="heading_4"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_value_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="@string/promo_checkout_mypoint"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintStart_toStartOf="@+id/text_point_value_coupon"
            app:layout_constraintTop_toBottomOf="@+id/text_point_value_coupon"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            tools:text="afdsafs"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_point_value_label"
            app:layout_constraintStart_toEndOf="@+id/text_point_value_label"
            app:layout_constraintTop_toTopOf="@+id/text_point_value_label"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/button_action_2"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_orange_enabled"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/Unify_N0"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_shaded_view" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/button_action_gunakan"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_green"
            android:gravity="center"
            tools:text="Gunakan"
            android:textAllCaps="false"
            android:textColor="@color/Unify_N0"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_shaded_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
