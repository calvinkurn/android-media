<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_bottom_sheet_rounded_white"
    android:orientation="vertical"
    android:gravity="bottom"
    android:id="@+id/parent"
    app:elevation="@dimen/dp_0"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >

    <TextView
        android:layout_marginTop="@dimen/dp_8"
        android:layout_gravity="center"
        android:id="@+id/tray_close"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_4"
        android:background="@drawable/close_button_bottom_sheet" />

    <com.tokopedia.unifyprinciples.Typography
            android:layout_marginLeft="@dimen/dp_16"
            android:id="@+id/title_closeable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="Detail Coupon"
            android:paddingLeft="@dimen/dp_8"
            android:textColor="@color/clr_f531353b"
            android:textStyle="normal"
            app:typographyType="heading_4" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="-6dp"
        android:scrollbars="none">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/img_banner"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:scaleType="fitCenter"
                android:src="@color/black"
                app:layout_constraintDimensionRatio="h,3:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/top_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_margin="@dimen/dp_16"
                android:background="#fef4f5"
                app:layout_constraintLeft_toLeftOf="@+id/text_description"
                app:layout_constraintRight_toRightOf="@+id/text_description"
                app:layout_constraintTop_toBottomOf="@+id/titleMinTrans" />

            <View
                android:id="@+id/mid_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_margin="@dimen/dp_16"
                android:background="#f3f4f5"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/tnc_see_more"
                app:layout_constraintRight_toRightOf="@+id/tnc_see_more"
                app:layout_constraintTop_toBottomOf="@+id/tnc_see_more" />

            <View
                android:id="@+id/bottom_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="#f3f4f5"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/how_to_use_see_more"
                app:layout_constraintRight_toRightOf="@+id/how_to_use_see_more"
                app:layout_constraintTop_toBottomOf="@+id/how_to_use_see_more"
                app:layout_goneMarginBottom="@dimen/dp_8" />

            <WebView
                android:id="@+id/tnc_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:scrollbars="none"
                app:layout_constraintLeft_toLeftOf="@+id/tnc"
                app:layout_constraintRight_toRightOf="@+id/tnc"
                app:layout_constraintTop_toBottomOf="@+id/tnc" />


            <WebView
                android:id="@+id/how_to_use_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_16"
                android:scrollbars="none"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="@+id/how_to_use"
                app:layout_constraintRight_toRightOf="@+id/how_to_use"
                app:layout_constraintTop_toBottomOf="@+id/how_to_use" />
