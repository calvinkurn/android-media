<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/containerButton"
        android:layout_alignParentTop="true"
        android:layout_weight="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitlePromo"
                style="@style/TextView.Small.Bold"
                android:layout_margin="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageBannerPromo"
                tools:text="Cashback Hingga Rp.25.000" />

            <TextView
                android:id="@+id/tnc"
                style="@style/TextView.Small.Bold"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:text="Syarat &amp; Ketentuan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textMinTrans" />

            <WebView
                android:id="@+id/webviewTnc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tnc" />

            <com.tokopedia.promocheckout.widget.PromoImageView
                android:id="@+id/imageBannerPromo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="visible"
                app:layout_constraintDimensionRatio="H,3:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_voucher_promo_green" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/titleMinTrans"
                style="@style/TextView.Micro10.BlackSecondary"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:drawableLeft="@drawable/ic_voucher_promo_green"
                android:drawablePadding="@dimen/dp_12"
                android:gravity="center_vertical"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTitlePromo"
                tools:text="tanpa minimum " />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/textMinTrans"
                style="@style/TextView.Small.Bold"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:textColor="@color/black_70"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/titleMinTrans"
                tools:text="Rp 3000000" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/containerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <View
            android:id="@+id/top_shaded_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_6"
            android:background="@drawable/bg_tp_shadow"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_2"
            android:text=";laksdjf;alsjd"
            android:textColor="#7031353b"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/text_point_discount"
            app:layout_constraintTop_toTopOf="@+id/text_point_discount"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/bg_red_rounded_discount"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_2"
            android:text="14% OFF"
            android:textColor="@color/Red_R400"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_value_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:text=";lkdf;lkjsdnm"
            android:textColor="@color/Yellow_Y500"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_point_discount"
            app:layout_goneMarginTop="@dimen/dp_24"
            app:typographyType="heading_4"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_value_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_2"
            android:text="Point Value Label"
            android:textColor="@color/clr_ae31353b"
            app:layout_constraintStart_toStartOf="@+id/text_point_value_coupon"
            app:layout_constraintTop_toBottomOf="@+id/text_point_value_coupon"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_point_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="afdsafs"
            android:textColor="@color/clr_ae31353b"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_point_value_label"
            app:layout_constraintStart_toEndOf="@+id/text_point_value_label"
            app:layout_constraintTop_toTopOf="@+id/text_point_value_label"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/buttonUse"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_weight="1"
            android:background="@drawable/bg_button_buy_orange"
            android:gravity="center"
            android:text="Tukar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_shaded_view" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
