<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="214dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_marginTop="@dimen/dp_24"
        android:id="@+id/tv_titlepopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:text="tittlr"/>


    <TextView
        android:layout_marginTop="@dimen/dp_16"
        android:id="@+id/tv_contentpopup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="10.000 Points akan ditukar kupon dan otomatis aktif di keranjang belanja"
        app:layout_constraintTop_toBottomOf="@+id/tv_titlepopup"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:background="@drawable/bg_button_redeem"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:id="@+id/button1"
        android:layout_marginTop="@dimen/dp_52"
        android:layout_width="132dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="Cari Kupo lain"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_contentpopup"/>

    <TextView
        app:layout_constraintStart_toEndOf="@+id/button1"
        android:id="@+id/button2"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_orange"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="132dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_16"
        android:text="Tukar"
        android:layout_marginTop="@dimen/dp_52"
        app:layout_constraintTop_toBottomOf="@+id/tv_contentpopup"/>


</android.support.constraint.ConstraintLayout>