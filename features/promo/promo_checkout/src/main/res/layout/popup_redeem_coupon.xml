<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="328dp"
    android:layout_height="214dp"
    xmlns:tools="http://schemas.android.com/tools"

    app:cardCornerRadius="@dimen/dp_8">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_titlepopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            tools:text="tittlr"
            app:typographyType="heading_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            app:typographyWeight="reguler"
            app:typographyType="body_2"
            android:id="@+id/tv_contentpopup"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            tools:text="10.000 Points akan ditukar kupon dan otomatis aktif di keranjang belanja"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_titlepopup" />

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            android:id="@+id/button1"
            android:layout_width="@dimen/button_dp_132"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/bg_button_redeem"
            android:gravity="center"
            tools:text="Cari Kupo lain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_contentpopup"
            android:layout_marginStart="@dimen/dp_16" />

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            android:id="@+id/button2"
            android:layout_width="@dimen/button_dp_132"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_52"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/bg_button_orange"
            android:gravity="center"
            tools:text="Tukar"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/tv_contentpopup"
            android:layout_marginEnd="@dimen/dp_16" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>