<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPromoLastSeen"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="4dp"
    app:cardBackgroundColor="@color/Unify_N0"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/descPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            tools:text="Waktunya Kulineran! Beli Voucher Makannya, Cashback hingga Rp20…" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/descPromoDeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Waktunya Kulineran! Beli Voucher Makannya, Cashback hingga Rp20…    " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ic_voucher_promo_green" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/promo_label_promo_code"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/voucherCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_Y500"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="VOUCHER HEMAT" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
