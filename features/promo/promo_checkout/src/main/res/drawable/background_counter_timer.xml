<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dp"/>
            <gradient android:angle="90" android:endColor="@color/Unify_N0" android:startColor="@color/Unify_N50"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15dp"/>
                <gradient android:angle="90" android:endColor="@color/Unify_R100" android:startColor="@color/Unify_R100"/>
            </shape>
        </clip>
    </item>
</layer-list>
