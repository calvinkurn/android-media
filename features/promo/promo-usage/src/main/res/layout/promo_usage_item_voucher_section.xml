<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgSectionTitle"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp"
        tools:text="2 promo buat pembayaran tertentu"
        android:gravity="center"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        android:layout_height="wrap_content"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconChevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentEnd="true"
        app:icon_name="CHEVRON_DOWN"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/childRecyclerView"
        android:layout_width="match_parent"
        tools:listitem="@layout/promo_usage_item_voucher"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:itemCount="5"
        android:layout_below="@id/tpgSectionTitle"
        android:layout_height="wrap_content"/>

</RelativeLayout>