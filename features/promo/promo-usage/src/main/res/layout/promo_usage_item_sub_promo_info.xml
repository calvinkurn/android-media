<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iuPromoInfo"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tpgPromoInfo"
        app:layout_constraintEnd_toStartOf="@+id/tpgPromoInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tpgPromoInfo" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgPromoInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iuPromoInfo"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        tools:text="Disesuaikan jika pilih Bebas Ongkir" />
</androidx.constraintlayout.widget.ConstraintLayout>