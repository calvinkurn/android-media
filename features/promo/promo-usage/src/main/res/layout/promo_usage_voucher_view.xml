<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/imgSupergraphic"
                android:layout_width="152dp"
                android:layout_height="74dp"
                android:contentDescription="@string/promo_voucher_cd_voucher_supergraphic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/imgVoucherIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/promo_voucher_cd_voucher_icon"
                app:layout_constraintEnd_toEndOf="@+id/imgSupergraphic"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgCheckmark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/promo_usage_ic_voucher_checkmark"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgVoucherType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/Unify_GN500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="display_3"
                app:typographyWeight="bold"
                tools:text="Cashback" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgVoucherAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tpgVoucherType"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                tools:text="20.000 Gopay Coins" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/top_shimmer"
                android:layout_width="189dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tpgVoucherType"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/middle_shimmer"
                android:layout_width="164dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top_shimmer"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/bottom_shimmer"
                android:layout_width="102dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/middle_shimmer"
                app:loader_type="rect" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="bottom_shimmer, tpgVoucherTnc" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgVoucherTnc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tpgVoucherAmount"
                app:typographyType="display_3"
                tools:text="Disesuaikan jika pilih Bebas Ongkir" />


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgVoucherExpiredDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/promo_usage_shape_voucher_expired_date"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier"
                app:typographyType="display_3"
                tools:text="Berakhir dalam 2 hari" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgVoucherCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintBottom_toBottomOf="@+id/tpgVoucherExpiredDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tpgVoucherExpiredDate"
                app:typographyType="display_3"
                app:typographyWeight="bold"
                tools:text="TOKOPEDIAXBCA" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgAdditionalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/promo_usage_shape_voucher_ineligible"
        android:textColor="@color/Unify_YN600"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpgVoucherExpiredDate"
        app:typographyType="paragraph_3"
        tools:text="Belum bisa dipakai barengan promo yang dipilih."
        tools:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layoutActionable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpgVoucherExpiredDate"
        tools:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpgActionableText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/promo_usage_shape_voucher_actionable"
            android:textColor="@color/Unify_NN950"
            app:typographyType="paragraph_3"
            tools:text="Belum bisa dipakai barengan promo yang dipilih."
            tools:visibility="visible" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iconChevronRight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            app:icon_color_light_enable="@color/Unify_GN500"
            app:icon_color_night_enable="@color/Unify_GN500"
            app:icon_name="CHEVRON_RIGHT" />

    </RelativeLayout>
</LinearLayout>