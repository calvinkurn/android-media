<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Bottom Sheet Header (Title, Close Icon)-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        tools:background="@drawable/background_bottomsheet_promo">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btnBottomSheetHeaderClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:icon_color_light_enable="@color/Unify_Static_Black"
            app:icon_color_night_enable="@color/Unify_Static_Black"
            app:icon_name="CLOSE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpgBottomSheetHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/detail_harga"
            android:textColor="@color/Unify_Static_Black"
            app:layout_constraintBottom_toBottomOf="@+id/btnBottomSheetHeaderClose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBottomSheetHeaderClose"
            app:layout_constraintTop_toTopOf="@+id/btnBottomSheetHeaderClose"
            app:typographyType="heading_3" />

        <include
            android:id="@+id/typography"
            layout="@layout/layout_benefit_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBottomSheetHeaderClose" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:background="@color/Unify_Background">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typography2"
            app:typographyType="heading_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/cek_info_tentang_promonya_dulu_yuk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:id="@+id/ll_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/typography2"
            app:layout_constraintTop_toBottomOf="@+id/typography2">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                app:typographyType="display_3"
                android:layout_height="wrap_content"
                tools:text="\u2022  Nominal promo bisa berubah dikarenakan waktu pembelian, ketersediaan produk, periode promosi, ketentuan promo. " />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.tokopedia.iconunify.IconUnify
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            app:icon_name="CHEVRON_DOWN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>