<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="160dp"
    android:minHeight="64dp">

    <com.tokopedia.promousage.view.custom.simple.PromoMiniCardView
        android:id="@+id/promo_mini_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/promo_cl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/promo_iv_background_mini_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constrainedWidth="true"/>

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/promo_iv_icon_small_mini_card"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/promo_iv_icon_big_mini_card"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/promo_tv_type_mini_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/promo_iv_icon_big_mini_card"
                app:layout_constraintBottom_toTopOf="@id/promo_tv_title_mini_card"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_goneMarginEnd="32dp"
                app:typographyType="display_3"
                app:typographyWeight="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/Unify_GN500"
                tools:text="Cashback" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/promo_tv_title_mini_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/promo_tv_type_mini_card"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/promo_iv_icon_big_mini_card"
                app:layout_constraintBottom_toTopOf="@id/promo_tv_desc_mini_card"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_goneMarginEnd="32dp"
                app:layout_goneMarginBottom="8dp"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/Unify_NN950"
                tools:text="20.000 Gopay Coins" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/promo_tv_desc_mini_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/promo_tv_title_mini_card"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/promo_iv_icon_big_mini_card"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_goneMarginEnd="32dp"
                android:layout_marginBottom="8dp"
                app:typographyType="display_3"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/Unify_NN600"
                tools:text="Berakhir dalam 2 hari"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.promousage.view.custom.simple.PromoMiniCardView>

</androidx.constraintlayout.widget.ConstraintLayout>