<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/promo_shimmer"
        layout="@layout/promo_checkout_promo_bottomsheet_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutTotalSavings"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBgRecommendation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/promo_usage_bg_recommendation_gradient"
                app:layout_constraintBottom_toBottomOf="@id/recyclerViewVoucherRecommendation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivConfetti"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/promo_usage_bg_confetti"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgRecommendationTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/Unify_NN0"
                app:layout_constraintEnd_toStartOf="@+id/btnRecommendationUseVoucher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_3" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnRecommendationUseVoucher"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:text="@string/promo_voucher_use"
                app:layout_constraintBottom_toBottomOf="@+id/tpgRecommendationTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tpgRecommendationTitle"
                app:unifyButtonSize="medium"
                app:unifyButtonVariant="ghost" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewVoucherRecommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRecommendationUseVoucher"
                tools:itemCount="3"
                tools:listitem="@layout/promo_checkout_item_voucher" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewVoucherRecommendation"
                tools:itemCount="3"
                tools:listitem="@layout/promo_checkout_item_voucher_section" />

            <View
                android:id="@+id/topDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/Unify_NN200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerView" />

            <com.tokopedia.unifycomponents.TextAreaUnify2
                android:id="@+id/tauVoucherCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topDivider"
                app:unify_text_field_label="@string/promo_voucher_enter_voucher_code"
                app:unify_text_field_label_static="false" />

            <com.tokopedia.promousage.view.bottomsheet.VoucherView
                android:id="@+id/userInputVoucherView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tauVoucherCode" />

            <View
                android:id="@+id/bottomDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/Unify_NN200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userInputVoucherView" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgTnc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="@string/promo_voucher_view_tnc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bottomDivider"
                app:typographyType="display_3"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/layoutTotalSavings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardViewTotalPrice"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/promo_usage_shape_voucher_summary"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCheckmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/promo_usage_ic_rounded_checkmark" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpgTotalSavings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivCheckmark"
            android:layout_alignBottom="@id/ivCheckmark"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ivCheckmark"
            android:gravity="center|start"
            android:textColor="@color/Unify_NN950"
            app:typographyType="display_3"
            tools:text="@string/promo_voucher_placeholder_total_savings" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:cardBackgroundColor="@color/Unify_NN0"
        app:cardElevation="4dp"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgTotalPriceLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/promo_voucher_total_price"
                app:layout_constraintEnd_toStartOf="@+id/buttonBuy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="display_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgTotalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/buttonBuy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tpgTotalPriceLabel"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                tools:text="Rp 78.000" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/buttonBuy"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/promo_voucher_buy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unifyButtonSize="medium" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/buttonBackToShipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/promo_voucher_back_to_shipment"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unifyButtonSize="medium" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>