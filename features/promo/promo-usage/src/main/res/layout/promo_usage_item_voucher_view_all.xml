<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgViewAll"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:text="Lihat 1 Promo Lainnya"
        android:layout_centerInParent="true"
        app:typographyType="paragraph_3"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_GN500"
        android:layout_height="wrap_content"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconChevron"
        android:layout_width="24dp"
        android:layout_gravity="center"
        android:layout_height="24dp"
        app:icon_color_light_enable="@color/Unify_G500"
        app:icon_color_night_enable="@color/Unify_G500"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/tpgViewAll"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="12dp"
        app:icon_name="CHEVRON_DOWN"/>

</RelativeLayout>