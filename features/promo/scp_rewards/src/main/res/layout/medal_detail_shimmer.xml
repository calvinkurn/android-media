<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/bg_loader"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_corner_radius="0dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/podium_loader"
            android:layout_width="213dp"
            android:layout_height="32dp"
            android:translationY="-16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bg_loader"
            app:loader_corner_radius="48dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text_loader_1"
            android:layout_width="200dp"
            android:layout_height="14dp"
            android:layout_marginTop="33dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/podium_loader"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text_loader_2"
            android:layout_width="256dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_loader_1"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text_loader_3"
            android:layout_width="294dp"
            android:layout_height="12dp"
            android:layout_marginTop="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_loader_2"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/text_loader_4"
            android:layout_width="48dp"
            android:layout_height="12dp"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_loader_3"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/pill_loader"
            android:layout_width="141dp"
            android:layout_height="24dp"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_loader_4"
            app:loader_corner_radius="48dp"
            app:loader_type="rect" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_loader"
            android:layout_width="0dp"
            android:layout_height="167dp"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="33dp"
            android:background="@drawable/card_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pill_loader">

            <LinearLayout
                android:id="@+id/task_header_loader"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@drawable/card_border"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/task_loader_1"
                    android:layout_width="101dp"
                    android:layout_height="14dp"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:layout_width="257dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="13dp"
                    app:loader_corner_radius="8dp"
                    app:loader_type="rect" />
            </LinearLayout>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/check_box_loader_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/task_header_loader"
                app:loader_corner_radius="4dp"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/check_box_loader_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/check_box_loader_1"
                app:loader_corner_radius="4dp"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/checkbox_text_loader_1"
                android:layout_width="258dp"
                android:layout_height="12dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/check_box_loader_1"
                app:layout_constraintStart_toEndOf="@+id/check_box_loader_1"
                app:layout_constraintTop_toTopOf="@+id/check_box_loader_1"
                app:loader_corner_radius="8dp"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/checkbox_text_loader_2"
                android:layout_width="258dp"
                android:layout_height="12dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/check_box_loader_2"
                app:layout_constraintStart_toEndOf="@+id/check_box_loader_2"
                app:layout_constraintTop_toTopOf="@+id/check_box_loader_2"
                app:loader_corner_radius="8dp"
                app:loader_type="rect" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/coupon_loader_1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_loader"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:layout_width="159dp"
            android:layout_height="12dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@+id/coupon_loader_1"
            app:layout_constraintTop_toBottomOf="@+id/coupon_loader_1"
            app:loader_corner_radius="8dp"
            app:loader_type="rect" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

