<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.MedalDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.4"
        android:id="@+id/frame_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:translationY="-30dp"
            android:elevation="1dp"
            android:layout_gravity="center"
            android:id="@+id/lottie_badge"/>

    </FrameLayout>

    <ImageView
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:elevation="1dp"
        android:translationY="-30dp"
        android:id="@+id/iv_badge_base"
        app:layout_constraintTop_toBottomOf="@id/frame_background"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:translationY="-30dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.6"
        android:background="@drawable/scp_medal_detail_rounded_bg"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_background">

        <androidx.cardview.widget.CardView
            android:id="@+id/sponsor_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#383838"
            app:cardCornerRadius="20dp"
            app:contentPaddingBottom="4dp"
            app:contentPaddingLeft="8dp"
            app:contentPaddingRight="8dp"
            app:contentPaddingTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_background">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/brand_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by L'Oreal Paris"
                android:textColor="@color/Unify_NN0"
                app:typographyType="display_3"
                app:typographyWeight="bold" />
        </androidx.cardview.widget.CardView>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_medal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="The Beauty Shopper"
            android:textColor="@color/Unify_NN950"
            app:typographyType="heading_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_medal_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Kamu dapet Medali ini karena pernah belanja 1x di L'Oreal Paris bulan Januari - Agustus 2022"
            android:textColor="@color/Unify_NN600"
            app:typographyType="paragraph_2" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/scp_medal_detail_coupon"
            android:id="@+id/iv_coupon"
            app:layout_constraintTop_toBottomOf="@id/frame_background"
            app:layout_constraintBottom_toTopOf="@id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_coupon_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="*Use the coupon by 17 May, 23"
            android:textColor="@color/Unify_NN600"
            app:typographyType="small" />

    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cta1"
        android:foregroundTint="@color/Unify_NN600"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_cta2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:unifyButtonVariant="ghost"
        android:text="See Cabinet"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cta2"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toEndOf="@id/btn_cta1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="Use Medali Bonus"/>

</androidx.constraintlayout.widget.ConstraintLayout>