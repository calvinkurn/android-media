<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:backgroundTint="@color/Unify_GN500"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.tokopedia.header.HeaderUnify
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header_program_detail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:title="Detail Program"
            app:unify_header_is_show_shadow="false"
            />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_Background"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            >
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll"
                >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/Unify_NN0"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linear_top"
                            android:padding="@dimen/unify_space_16"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.tokopedia.unifyprinciples.Typography
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/Unify_NN0"
                                    app:typographyType="heading_3"
                                    android:text="@string/tm_detail_periode"/>

                                <com.tokopedia.unifyprinciples.Typography
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textColor="@color/Unify_NN0"
                                    android:id="@+id/tvProgramStatus"
                                    android:padding="@dimen/tm_dash_dp_4"
                                    android:background="@drawable/tm_bg_coupon_membership"
                                    android:layout_marginStart="@dimen/tm_dash_dp_12"
                                    app:typographyType="small" />

                            </LinearLayout>

                            <com.tokopedia.unifyprinciples.Typography
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tm_dash_dp_8"
                                android:id="@+id/tvProgramPeriod"
                                android:textColor="@color/Unify_NN0"
                                app:typographyType="display_2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tm_dash_dp_24"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.tokopedia.unifyprinciples.Typography
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Performa program "
                                    android:id="@+id/tvName"
                                    android:textColor="@color/Unify_NN0"
                                    app:typographyType="display_2"/>

                                <com.tokopedia.iconunify.IconUnify
                                    android:layout_width="@dimen/tm_dash_dp_16"
                                    android:layout_height="@dimen/tm_dash_dp_16"
                                    app:icon_color_light_enable="@color/Unify_NN0"
                                    app:icon_name="INFORMATION"/>

                            </LinearLayout>

                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tm_dash_dp_12"
                                android:orientation="horizontal">

                                <com.tokopedia.unifycomponents.CardUnify
                                    android:layout_width="@dimen/tm_dash_dp_160"
                                    android:layout_height="wrap_content"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:background="@color/Unify_NN0">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingStart="@dimen/dp_16"
                                        android:paddingEnd="@dimen/unify_space_4"
                                        android:paddingTop="@dimen/unify_space_12"
                                        android:paddingBottom="@dimen/unify_space_12"
                                        android:orientation="vertical">

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/Unify_NN950"
                                            app:typographyType="display_3"
                                            android:text="@string/tm_detail_pertambahan_member"/>

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/tvMemberCount"
                                            android:textColor="@color/Unify_NN950"
                                            app:typographyType="heading_4"
                                            />

                                    </LinearLayout>

                                </com.tokopedia.unifycomponents.CardUnify>
                                <com.tokopedia.unifycomponents.CardUnify
                                    android:layout_width="@dimen/tm_dash_dp_160"
                                    android:layout_height="wrap_content"
                                    android:layout_row="0"
                                    android:layout_column="1"
                                    android:background="@color/Unify_NN0">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingStart="@dimen/dp_16"
                                        android:paddingEnd="@dimen/unify_space_4"
                                        android:paddingTop="@dimen/unify_space_12"
                                        android:paddingBottom="@dimen/unify_space_12"
                                        android:orientation="vertical">

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/Unify_NN950"
                                            app:typographyType="display_3"
                                            android:text="@string/tm_detail_jumlah_transaksi"/>

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/tvTransactionCount"
                                            android:textColor="@color/Unify_NN950"
                                            app:typographyType="heading_4"
                                            />

                                    </LinearLayout>

                                </com.tokopedia.unifycomponents.CardUnify>
                                <com.tokopedia.unifycomponents.CardUnify
                                    android:layout_width="@dimen/tm_dash_dp_160"
                                    android:layout_height="wrap_content"
                                    android:layout_row="1"
                                    android:layout_column="0"
                                    android:background="@color/Unify_NN0">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingStart="@dimen/dp_16"
                                        android:paddingEnd="@dimen/unify_space_4"
                                        android:paddingTop="@dimen/unify_space_12"
                                        android:paddingBottom="@dimen/unify_space_12"
                                        android:orientation="vertical">

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/Unify_NN950"
                                            app:typographyType="display_3"
                                            android:text="@string/tm_detail_pendapatan"/>

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/tvIncome"
                                            android:textColor="@color/Unify_NN950"
                                            app:typographyType="heading_4"
                                            />

                                    </LinearLayout>

                                </com.tokopedia.unifycomponents.CardUnify>

                            </GridLayout>

                        </LinearLayout>

                            <com.tokopedia.unifycomponents.CardUnify
                                android:id="@+id/card_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginHorizontal="16dp"
                                app:layout_constraintTop_toBottomOf="@id/linear_top"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/unify_space_8"
                                        android:padding="@dimen/tm_dash_dp_10"
                                        android:backgroundTint="@color/Unify_NN50"
                                        android:background="@drawable/tm_bg_round_corner"
                                        android:orientation="horizontal">

                                        <com.tokopedia.unifycomponents.ImageUnify
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@drawable/tm_ic_tokomember_premium"/>

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="@dimen/dp_8"
                                            android:text="@string/tm_premium_level_1"
                                            android:textColor="@color/Unify_NN950"
                                            app:typographyType="display_3"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/unify_space_16"
                                        android:layout_marginBottom="@dimen/tm_dash_dp_10"
                                        android:orientation="horizontal"
                                        android:baselineAligned="false">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginStart="@dimen/dp_16"
                                                android:text="@string/tm_min_transaksi"
                                                android:textColor="@color/Unify_NN950"
                                                app:typographyType="body_3"/>

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/tvTransactionPremium"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginStart="@dimen/tm_dash_dp_16"
                                                android:textColor="@color/Unify_NN950"
                                                app:typographyType="heading_6"/>

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginStart="@dimen/dp_10"
                                                android:text="@string/tm_detail_member"
                                                android:textColor="@color/Unify_NN950"
                                                app:typographyType="body_3"/>

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/tvMemberCountPremium"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginStart="@dimen/dp_10"
                                                android:textColor="@color/Unify_NN950"
                                                app:typographyType="heading_6"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </com.tokopedia.unifycomponents.CardUnify>
                            <com.tokopedia.unifycomponents.CardUnify
                                android:id="@+id/card_2"
                                app:layout_constraintTop_toBottomOf="@+id/card_1"
                                android:layout_marginHorizontal="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/unify_space_8"
                                        android:padding="@dimen/tm_dash_dp_10"
                                        android:backgroundTint="@color/Unify_NN50"
                                        android:background="@drawable/tm_bg_round_corner"
                                        android:orientation="horizontal">

                                        <com.tokopedia.unifycomponents.ImageUnify
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@drawable/tm_ic_tokomember_vip"/>

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="@dimen/tm_dash_dp_8"
                                            android:text="@string/tm_vip_level_2"
                                            android:textColor="@color/Unify_NN950"
                                            app:typographyType="display_3"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/unify_space_16"
                                        android:layout_marginBottom="@dimen/tm_dash_dp_10"
                                        android:orientation="horizontal"
                                        android:baselineAligned="false">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginStart="@dimen/tm_dash_dp_16"
                                                android:text="@string/tm_min_transaksi"
                                                android:textColor="@color/Unify_NN950"
                                                app:typographyType="body_3"/>

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/tvTransactionVip"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginStart="@dimen/tm_dash_dp_16"
                                                android:textColor="@color/Unify_NN950"
                                                app:typographyType="heading_6"/>

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginStart="@dimen/tm_dash_dp_10"
                                                android:text="@string/tm_detail_member"
                                                android:textColor="@color/Unify_NN950"
                                                app:typographyType="body_3"/>

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/tvMemberCountVip"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginStart="@dimen/tm_dash_dp_10"
                                                android:textColor="@color/Unify_NN950"
                                                app:typographyType="heading_6"/>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </com.tokopedia.unifycomponents.CardUnify>

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tm_kupon_tokomember"
                            android:textColor="@color/Unify_NN950"
                            app:typographyType="heading_3"
                            android:layout_marginStart="@dimen/tm_dash_dp_16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/card_2"
                            android:id="@+id/kuponTokomemberHeading"
                            android:layout_marginTop="24dp"
                            />

                        <com.tokopedia.iconunify.IconUnify
                            android:layout_width="@dimen/tm_dash_dp_16"
                            android:layout_height="@dimen/tm_dash_dp_16"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="@dimen/tm_dash_dp_4"
                            app:icon_name="INFORMATION"
                            app:icon_color_light_enable="#2E3137"
                            app:layout_constraintStart_toEndOf="@id/kuponTokomemberHeading"
                            app:layout_constraintTop_toTopOf="@+id/kuponTokomemberHeading"
                            app:layout_constraintBottom_toBottomOf="@+id/kuponTokomemberHeading"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewFlipperIntro"
        android:clickable="true"
        android:measureAllChildren="false"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:focusable="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tm_dash_dp_12"
            android:id="@+id/frameCouponList"
            />

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
