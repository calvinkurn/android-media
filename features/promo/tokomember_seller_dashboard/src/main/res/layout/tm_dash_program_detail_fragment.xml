<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewFlipperIntro"
    android:background="@color/Unify_Background"
    android:clickable="true"
    android:measureAllChildren="false">

    <com.tokopedia.header.HeaderUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_program_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Detail Program"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/linear_top"
        android:padding="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/header_program_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/tm_intro_bg"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN0"
            app:typographyType="heading_3"
            android:text="Periode"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProgramPeriod"
            android:textColor="@color/Unify_NN0"
            app:typographyType="heading_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:textColor="@color/Unify_NN0"
                app:typographyType="heading_3"/>

            <com.tokopedia.iconunify.IconUnify
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                app:icon_color_light_enable="@color/Unify_NN0"
                app:icon_name="INFORMATION"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifycomponents.CardUnify
                android:layout_width="@dimen/dp_160"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@color/Unify_NN0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="4dp"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12"
                    android:orientation="vertical">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Unify_NN950"
                        app:typographyType="heading_6"
                        android:text="Pertambahan member"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvMemberCount"
                        android:textColor="@color/Unify_NN950"
                        app:typographyType="heading_6"/>

                </LinearLayout>

            </com.tokopedia.unifycomponents.CardUnify>
            <com.tokopedia.unifycomponents.CardUnify
                android:layout_width="@dimen/dp_160"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/Unify_NN0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="4dp"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12"
                    android:orientation="vertical">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Unify_NN950"
                        app:typographyType="heading_6"
                        android:text="Jumlah transaksi"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTransactionCount"
                        android:textColor="@color/Unify_NN950"
                        app:typographyType="heading_6"/>

                </LinearLayout>

            </com.tokopedia.unifycomponents.CardUnify>
            <com.tokopedia.unifycomponents.CardUnify
                android:layout_width="@dimen/dp_160"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@color/Unify_NN0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="4dp"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12"
                    android:orientation="vertical">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Unify_NN950"
                        app:typographyType="heading_6"
                        android:text="Pendapatan"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvIncome"
                        android:textColor="@color/Unify_NN950"
                        app:typographyType="heading_6"/>

                </LinearLayout>

            </com.tokopedia.unifycomponents.CardUnify>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/linear_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.CardUnify
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:padding="@dimen/dp_10"
                    android:backgroundTint="@color/Unify_NN50"
                    android:background="@drawable/tm_bg_round_corner"
                    android:orientation="horizontal">

                    <com.tokopedia.unifycomponents.ImageUnify
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tokomember_premium"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="Level 1 - Premium"
                        android:textColor="@color/Unify_NN950"
                        app:typographyType="heading_6"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:text="Min. transaksi"
                            android:textColor="@color/Unify_NN950"
                            app:typographyType="body_3"/>

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTransactionPremium"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/Unify_NN950"
                            app:typographyType="heading_6"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:text="Jumlah member"
                            android:textColor="@color/Unify_NN950"
                            app:typographyType="body_3"/>

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvMemberCountPremium"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/Unify_NN950"
                            app:typographyType="heading_6"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.tokopedia.unifycomponents.CardUnify>
        <com.tokopedia.unifycomponents.CardUnify
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:padding="@dimen/dp_10"
                    android:backgroundTint="@color/Unify_NN50"
                    android:background="@drawable/tm_bg_round_corner"
                    android:orientation="horizontal">

                    <com.tokopedia.unifycomponents.ImageUnify
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tokomember_vip"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_10"
                        android:text="Level 2 - VIP"
                        android:textColor="@color/Unify_NN950"
                        app:typographyType="heading_6"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:text="Min. transaksi"
                            android:textColor="@color/Unify_NN950"
                            app:typographyType="body_3"/>

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvTransactionVip"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/Unify_NN950"
                            app:typographyType="heading_6"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:text="Jumlah member"
                            android:textColor="@color/Unify_NN950"
                            app:typographyType="body_3"/>

                        <com.tokopedia.unifyprinciples.Typography
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvMemberCountVip"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/Unify_NN950"
                            app:typographyType="heading_6"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.tokopedia.unifycomponents.CardUnify>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>