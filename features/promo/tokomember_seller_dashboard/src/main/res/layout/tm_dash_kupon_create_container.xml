<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Unify_Background"
    tools:ignore="MissingDefaultResource">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/headerKupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitle="Langkah 3 dari 4"
        app:title="Buat Kupon" />

    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/progressKupon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/unify_space_4"/>

    <include
        layout="@layout/tm_dash_kupon_create_multiple" />

</LinearLayout>