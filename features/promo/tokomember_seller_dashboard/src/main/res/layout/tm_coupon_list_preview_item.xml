<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/tm_dash_dp_282"
        android:layout_height="@dimen/tm_dash_dp_146">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tm_dash_dp_95"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            app:srcCompat="@drawable/tm_icon_tokomember"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPreview" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvMemberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:text="@string/tm_untuk_member"
            app:layout_constraintBottom_toTopOf="@id/tvMemberValue"
            app:layout_constraintStart_toEndOf="@id/ivLogo"
            app:layout_constraintTop_toTopOf="@id/ivLogo"
            app:typographyType="display_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvMemberValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:text="@string/tm_premium"
            app:layout_constraintBottom_toBottomOf="@id/ivLogo"
            app:layout_constraintStart_toEndOf="@id/ivLogo"
            app:layout_constraintTop_toBottomOf="@id/tvMemberTitle"
            app:typographyType="display_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivLogoUser"
            android:layout_width="@dimen/tm_dash_dp_24"
            android:layout_height="@dimen/tm_dash_dp_24"
            app:srcCompat="@drawable/tm_icon_user"
            android:layout_marginEnd="@dimen/unify_space_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvQuotaLabel"
            app:layout_constraintTop_toBottomOf="@id/ivPreview" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvQuotaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="@string/tm_kuota"
            app:layout_constraintBottom_toTopOf="@id/tvMQuotaValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivLogoUser"
            app:typographyType="display_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvMQuotaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="@string/tm_quota_value"
            app:layout_constraintBottom_toBottomOf="@id/ivLogoUser"
            app:layout_constraintStart_toStartOf="@id/tvQuotaLabel"
            app:layout_constraintTop_toBottomOf="@id/tvQuotaLabel"
            app:typographyType="display_2"
            app:typographyWeight="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>