<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardTokomember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tokomemberCardContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/unify_space_8"
            android:paddingTop="@dimen/unify_space_4"
            android:paddingEnd="@dimen/unify_space_8"
            android:paddingBottom="@dimen/unify_space_4">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/ivIconTokomember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tm_tokomember_icon" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokomember"
                android:textColor="@color/Unify_GN500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivIconTokomember"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="small"
                app:typographyWeight="bold" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:textColor="@color/Unify_N0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/cardTokomember"
        app:layout_constraintTop_toBottomOf="@+id/cardTokomember"
        app:typographyType="heading_2"
        tools:text="Pendapatan toko meningkat Pelanggan makin lekat" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:textColor="@color/Unify_N0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cardTokomember"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:typographyType="body_2"
        tools:text="Ada banyak keuntungan untuk tokomu dengan ikut TokoMember, lho!" />
</androidx.constraintlayout.widget.ConstraintLayout>