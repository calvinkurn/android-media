<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacing_lvl4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="280dp"
        android:layout_height="210dp"
        android:layout_marginTop="12dp"
        android:id="@+id/img_no_access"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_heading"
        app:typographyType="heading_2"
        android:layout_marginTop="16dp"
        android:text="Oops, kamu nggak punya akses untuk halaman ini"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_desc"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Hubungi pemilik toko untuk bisa mengakses halaman ini, ya."
        app:typographyType="body_1"

        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_no_access"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="@dimen/unify_space_16"
        app:unifyButtonSize="large"
        android:text="Kembali ke Home" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>