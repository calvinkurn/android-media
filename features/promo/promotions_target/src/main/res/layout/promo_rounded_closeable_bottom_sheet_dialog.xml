<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fromtkpddesign_header_bottom_sheet_rounded_white"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tray_close"
            android:layout_width="@dimen/dp_28"
            android:layout_height="4dp"
            android:background="@drawable/fromtkpddesign_close_button_bottom_sheet" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_rounded"
        android:background="@color/Unify_NN0"
        tools:background="@color/Unify_GN500"
        tools:layout_height="40dp" />
</androidx.constraintlayout.widget.ConstraintLayout>