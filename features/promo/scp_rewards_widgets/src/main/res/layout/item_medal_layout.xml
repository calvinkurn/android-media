<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginHorizontal="-30dp"
        android:layout_marginVertical="-30dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@id/iv_medal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_loop="true" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_medal"
        android:layout_width="@dimen/dp_75"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_placeholder="@drawable/ic_empty_medal"
        tools:srcCompat="@drawable/ic_empty_medal" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_medal_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="@id/iv_medal"
        app:layout_constraintStart_toStartOf="@id/iv_medal"
        app:layout_constraintTop_toBottomOf="@id/iv_medal"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="L'Oreal Paris Friend" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_medal_sub_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="center"
        android:textColor="@color/Unify_NN600"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/iv_medal"
        app:layout_constraintStart_toStartOf="@id/iv_medal"
        app:layout_constraintTop_toBottomOf="@id/tv_medal_title"
        app:typographyType="display_3"
        tools:text="dari L'Oreal Paris"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/progress_medal"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_4"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/iv_medal"
        app:layout_constraintStart_toStartOf="@id/iv_medal"
        app:layout_constraintTop_toBottomOf="@id/tv_medal_sub_title"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_medal_caption"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:textColor="@color/Unify_YN500"
        app:layout_constraintEnd_toEndOf="@id/iv_medal"
        app:layout_constraintStart_toStartOf="@id/iv_medal"
        app:layout_constraintTop_toBottomOf="@id/progress_medal"
        app:typographyType="small"
        app:typographyWeight="bold"
        tools:text="Ada bonus" />
</androidx.constraintlayout.widget.ConstraintLayout>