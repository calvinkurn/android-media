<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="title" format="string"/>
    <attr name="counter" format="string"/>
    <attr name="desc" format="string"/>
    <attr name="icon_left" format="string"/>
    <attr name="icon_right" format="string"/>

    <declare-styleable name="TickerCheckoutView">
        <attr name="state" format="enum">
            <enum name="inactive" value="0"/>
            <enum name="active" value="1"/>
            <enum name="failed" value="2"/>
            <enum name="empty" value="3"/>
        </attr>
        <attr name="title"/>
        <attr name="counter"/>
        <attr name="desc"/>
    </declare-styleable>

    <declare-styleable name="PromoCheckoutButtonView">
        <attr name="stateButton" format="enum">
            <enum name="loading" value="0"/>
            <enum name="active" value="1"/>
            <enum name="inactive" value="2"/>
        </attr>
        <attr name="title"/>
        <attr name="desc"/>
        <attr name="icon_left"/>
        <attr name="icon_right"/>
    </declare-styleable>
</resources>