<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_promo_checkout_summary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Bebas Ongkir" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_promo_checkout_summary_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="end"
        android:textColor="@color/Unify_TN500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_promo_checkout_summary_title"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Rp20.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_promo_checkout_summary_subvalue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:gravity="end"
        android:textColor="@color/Unify_TN500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_promo_checkout_summary_title"
        app:layout_constraintTop_toBottomOf="@id/tv_promo_checkout_summary_value"
        app:typographyType="small"
        app:typographyWeight="reguler"
        tools:text="(senilai Rp20.000)" />

</androidx.constraintlayout.widget.ConstraintLayout>