<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPink">
    <TextView
        android:id="@+id/buttton1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_50"
        android:text="1"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/button_border_green"/>

    <TextView
        android:id="@+id/buttton2"
        app:layout_constraintTop_toBottomOf="@id/buttton1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_50"
        android:text="2"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/button_border_green"/>

    <TextView
        android:id="@+id/buttton3"
        app:layout_constraintTop_toBottomOf="@id/buttton2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_50"
        android:text="3"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/button_border_green"/>

    <TextView
        android:id="@+id/buttton4"
        app:layout_constraintTop_toBottomOf="@id/buttton3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_50"
        android:text="4"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/button_border_green"/>

    <TextView
        android:id="@+id/buttton5"
        app:layout_constraintTop_toBottomOf="@id/buttton4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_50"
        android:text="5"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/button_border_green"/>

</androidx.constraintlayout.widget.ConstraintLayout>