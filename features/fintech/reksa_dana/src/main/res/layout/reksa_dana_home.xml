<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tokopedia.reksadana.view.activities.ReksaDanaHomeActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/informasi_title"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_35"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:hint="@string/name_hint" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="@string/email" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:hint="@string/email_hint" />

                <TextView
                    android:id="@+id/education_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />

                <Spinner
                    android:id="@+id/education_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp_0"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:paddingStart="@dimen/dp_0" />

                <TextView
                    android:id="@+id/education_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="error"
                    android:textColor="@color/red_300"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/income_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />

                <Spinner
                    android:id="@+id/income_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp_0"
                    style="@style/Widget.AppCompat.Spinner.Underlined" />

                <TextView
                    android:id="@+id/income_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="error"
                    android:textColor="@color/red_300"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/income_source_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />

                <Spinner
                    android:id="@+id/income_source_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp_0"
                    style="@style/Widget.AppCompat.Spinner.Underlined" />

                <TextView
                    android:id="@+id/income_source_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="error"
                    android:textColor="@color/red_300"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/investment_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />

                <Spinner
                    android:id="@+id/investment_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp_0"
                    style="@style/Widget.AppCompat.Spinner.Underlined" />

                <TextView
                    android:id="@+id/investment_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="error"
                    android:textColor="@color/red_300"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/occupation_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />

                <Spinner
                    android:id="@+id/occupation_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp_0"
                    style="@style/Widget.AppCompat.Spinner.Underlined" />

                <TextView
                    android:id="@+id/occupation_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="error"
                    android:textColor="@color/red_300"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="@string/ktp_text" />

                <LinearLayout
                    android:id="@+id/upload_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:background="@drawable/dashed_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/uploaded_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/add_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_unify_icon_tambah_foto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginStart="@dimen/dp_10"
                            android:text="@string/add_image" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/sign_text"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="@string/digital_text" />

                <RelativeLayout
                    android:id="@+id/main_sign_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginTop="@dimen/dp_16">

                    <LinearLayout
                        android:id="@+id/canvas_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey_200"
                        android:orientation="horizontal" />

                    <ImageView
                        android:id="@+id/retry_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="@dimen/dp_8"
                        app:srcCompat="@drawable/ic_icon_reset" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/checkbox_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="5"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="@string/confirm_text" />
                </LinearLayout>

                <TextView
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/grey_200"
                    android:gravity="center"
                    android:padding="@dimen/dp_16"
                    android:text="@string/selesai_btn" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/progress_layout"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Initializing"
            android:id="@+id/progress_text"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
