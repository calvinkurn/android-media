<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewbody_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_body"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/text_body_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_body_title" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_body_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="3dp"
        android:paddingTop="9dp"
        android:textColor="@color/Unify_NN700"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2 Pinjaman Terlambat Dibayar" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_body_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="8dp"
        android:textColor="@color/Unify_NN700"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_body_title"
        tools:text="Tarik hasil penjualan hingga Rp10.000.000 tanpa menunggu konfirmasi penerimaan dari pembeli." />

</androidx.constraintlayout.widget.ConstraintLayout>
