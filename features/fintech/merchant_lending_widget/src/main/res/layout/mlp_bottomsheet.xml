<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_action_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        android:lineSpacingExtra="6sp"
        tools:text="Menunggu  jmktgtkgmtkgkgg  "
        android:textColor="@color/clr_f531353b"
        app:layout_constraintStart_toEndOf="@+id/iv_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/iv_cancel"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cancel"
        />

    <TextView
        android:id="@+id/tv_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:lineSpacingExtra="6sp"
        tools:text="Pengajuan sedang kami proses. Lama proses verifikasi maksimum 1x24 jam sejak dokumen dikirim"
        android:textColor="@color/clr_ae31353b"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/iv_cancel"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_bottom" />

    <Button
        android:id="@+id/button_bottomsheet"
        android:layout_width="@dimen/mlp_button_bottomsheet_width"
        android:layout_height="@dimen/mlp_button_bottomsheet_height"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button_green"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_bottom"
        tools:text="Saya Yakin" />

</androidx.constraintlayout.widget.ConstraintLayout>
