<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_action_x"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        />

    <TextView
        android:id="@+id/tv_title_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#f531353b"
        android:lineSpacingExtra="6sp"
        android:layout_marginLeft="4dp"
        tools:text="Menunggu Proses Verifikasi"
        app:layout_constraintStart_toEndOf="@id/iv_cancel"
        app:layout_constraintTop_toTopOf="@id/iv_cancel"
        app:layout_constraintBottom_toBottomOf="@id/iv_cancel"
        />
    <TextView
        android:id="@+id/tv_detail_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ae31353b"
        android:lineSpacingExtra="6sp"
        app:layout_constraintTop_toBottomOf="@id/iv_cancel"
        app:layout_constraintStart_toStartOf="@id/iv_cancel"
        android:layout_marginTop="21dp"
        tools:text="Pengajuan sedang kami proses. Lama proses verifikasi maksimum 1x24 jam sejak dokumen dikirim"
        />

        <Button
            android:id="@+id/button_bottomsheet"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_width="288dp"
            android:layout_height="40dp"
            tools:text="Saya Yakin"
            android:layout_weight="1"
            android:padding="@dimen/dp_11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_bottom"
            android:background="@drawable/bg_button_green"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/white"

            />


</android.support.constraint.ConstraintLayout>