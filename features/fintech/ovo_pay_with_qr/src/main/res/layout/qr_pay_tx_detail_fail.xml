<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:src="@drawable/error_msg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:gravity="center_horizontal"
            android:text="Saat ini transaksi Anda tidak dapat
diproses, silakan mencoba kembali"
            android:textColor="#2d263b"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/call_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/top_section">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@drawable/ic_call" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butuh Bantuan?"
            android:textColor="#06b3ba"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/rounded_hollow_btn_bg"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_16"
        android:text="COBA LAGI"
        android:textColor="#06b3ba"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/back_to_main" />

    <TextView
        android:id="@+id/back_to_main"
        app:layout_constraintBottom_toTopOf="@+id/bottom_section_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_24"
        android:text="KEMBALI KE TOKOPEDIA"
        android:textColor="#06b3ba"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/bottom_section_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/bottom_section" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>