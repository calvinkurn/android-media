<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/card"
        app:card_type="shadow"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:id="@+id/cardContent"
            android:layout_height="match_parent">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/partnerIcon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="@dimen/pdp_fintech_16_dp"
                android:layout_marginTop="@dimen/pdp_fintech_16_dp"
                android:layout_marginBottom="@dimen/pdp_fintech_16_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/chipHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pdp_fintech_4_dp"
                android:layout_marginTop="@dimen/pfp_fintech_10_dp"
                app:layout_goneMarginLeft="@dimen/pfp_fintech_10_dp"
                tools:text="Rp1.dsf250*10."
                android:textColor="@color/Unify_N700_96"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingRight="@dimen/pfp_fintech_10_dp"
                app:layout_goneMarginBottom="@dimen/dp_10"
                app:layout_constraintBottom_toTopOf="@+id/chipSubHeader"
                app:layout_constraintLeft_toRightOf="@id/partnerIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography

                android:id="@+id/chipSubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pdp_fintech_4_dp"
                android:layout_marginBottom="@dimen/pdp_fintech_7_dp"
                android:paddingRight="@dimen/pfp_fintech_10_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/partnerIcon"
                app:layout_constraintTop_toBottomOf="@+id/chipHeader"
                app:layout_goneMarginLeft="@dimen/pfp_fintech_10_dp"
                app:layout_goneMarginRight="@dimen/dp_40"
                app:typographyType="small"
                tools:text="credit available: Rp 9.500" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.tokopedia.unifycomponents.CardUnify>

</LinearLayout>