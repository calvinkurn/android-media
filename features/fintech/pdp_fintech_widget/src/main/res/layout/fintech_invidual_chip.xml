<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:card_type="shadow"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/partnerIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="@dimen/pfp_fintech_10_dp"
                android:layout_marginTop="@dimen/pdp_fintech_14_dp"
                android:layout_marginBottom="@dimen/pdp_fintech_14_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/typography4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pdp_fintech_7_dp"
                android:text="Rp1.250.000X12"
                android:textColor="@color/Unify_N700_96"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/pdp_fintech_4_dp"
                app:layout_constraintBottom_toTopOf="@+id/typography3"
                app:layout_constraintLeft_toRightOf="@id/partnerIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography

                android:id="@+id/typography3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pfp_fintech_10_dp"
                android:layout_marginBottom="@dimen/pdp_fintech_7_dp"
                android:text="credit available: Rp 9.500"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/pdp_fintech_4_dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toRightOf="@id/partnerIcon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/typography4"
                app:typographyType="small" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.tokopedia.unifycomponents.CardUnify>

</LinearLayout>