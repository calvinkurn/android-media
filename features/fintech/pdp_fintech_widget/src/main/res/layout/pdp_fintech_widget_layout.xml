<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerLayoutFintechPdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pdp_fintech_widget_8_dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/quickText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pdp_fintech_widget_16_dp"
        android:layout_marginTop="@dimen/pdp_fintech_widget_14_dp"
        android:layout_marginEnd="@dimen/pdp_fintech_widget_16_dp"
        android:textColor="@color/Unify_N700_96"
        app:typographyWeight="bold"
        app:typographyType="display_2"
        tools:text = "Demo Title kjdfnv fkjdsng dlkjfng jfskng kjxfng kjfng"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintRight_toLeftOf="@id/lihat_semu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/lihat_semu"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:text="@string/pdp_fintech_lihat_semu"
        android:textColor="@color/unify_G500"
        app:layout_constraintBottom_toBottomOf="@id/quickText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/quickText"

        app:typographyType="paragraph_3" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/pdp_fintech_widget_16_dp"
        android:layout_marginBottom="@dimen/pdp_fintech_widget_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quickText" />


</androidx.constraintlayout.widget.ConstraintLayout>