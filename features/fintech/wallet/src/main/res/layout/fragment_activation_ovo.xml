<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/unify_space_16"
            android:contentDescription="@null"
            app:srcCompat="@drawable/wallet_ic_activation_ovo" />

        <com.tokopedia.unifyprinciples.Typography
            style="@style/TextView.TitleMedium.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_24"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:gravity="center_horizontal"
            app:typographyWeight="bold"
            app:typographyType="body_1"
            android:textColor="@color/Unify_N700_68"
            android:text="@string/wallet_activation_ovo_title" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/activation_desc"
            android:textColor="@color/Unify_N700_44"
            app:typographyWeight="reguler"
            app:typographyType="body_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/unify_space_32"
            android:layout_marginTop="@dimen/unify_space_24"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:gravity="center_horizontal"
            tools:text="@string/wallet_activation_ovo_desc" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/activation_ovo_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:unifyButtonType="main"
            app:unifyButtonSize="large"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="@string/wallet_activation_ovo_btn_activate" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/change_number_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:unifyButtonType="alternate"
            app:unifyButtonVariant="ghost"
            app:unifyButtonSize="large"
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="@string/wallet_activation_ovo_btn_change_number"/>

    </LinearLayout>

</ScrollView>