<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_ovo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:layout_marginTop="@dimen/unify_space_16"
                app:srcCompat="@drawable/wallet_ic_intro_ovo" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/title_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_16"
                android:layout_marginStart="@dimen/unify_space_16"
                android:layout_marginEnd="@dimen/unify_space_16"
                android:gravity="center_horizontal"
                app:typographyWeight="bold"
                app:typographyType="heading_4"
                android:textColor="@color/Unify_NN950_68"
                android:text="@string/wallet_announcement_ovo_title"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/description_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/unify_space_16"
                android:layout_marginBottom="@dimen/unify_space_24"
                android:layout_marginStart="@dimen/unify_space_16"
                android:layout_marginEnd="@dimen/unify_space_16"
                android:textColor="@color/Unify_NN950_44"
                app:typographyType="body_2"
                android:gravity="center_horizontal"
                android:text="@string/wallet_announcement_ovo_description"  />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/description_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/unify_space_16"
                android:layout_marginBottom="@dimen/unify_space_24"
                android:layout_marginStart="@dimen/unify_space_16"
                android:layout_marginEnd="@dimen/unify_space_16"
                android:textColor="@color/Unify_NN950_44"
                app:typographyType="body_2"
                android:gravity="center_horizontal"
                android:text="@string/wallet_announcement_ovo_second_desc"  />


            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/activation_ovo_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unifyButtonVariant="filled"
                app:unifyButtonType="main"
                android:layout_marginStart="@dimen/unify_space_16"
                android:layout_marginEnd="@dimen/unify_space_16"
                android:text="@string/wallet_announcement_ovo_btn_activation"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/learn_more_ovo_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:unifyButtonVariant="ghost"
                app:unifyButtonType="alternate"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_marginStart="@dimen/unify_space_16"
                android:layout_marginEnd="@dimen/unify_space_16"
                android:text="@string/wallet_announcement_ovo_btn_learn_more" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tnc_ovo"
                android:textColor="@color/Unify_NN950_44"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/unify_space_16"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_marginRight="@dimen/unify_space_16"
                android:layout_marginBottom="@dimen/unify_space_16"
                android:gravity="center_horizontal"
                android:text="@string/wallet_announcement_ovo_text_tnc"  />

        </LinearLayout>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/unify_space_32"
            android:layout_height="@dimen/unify_space_32"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>