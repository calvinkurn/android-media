<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_lvl3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_ovo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl2"
            app:srcCompat="@drawable/wallet_ic_intro_activation" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_ovo_activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/light_N700_96"
            app:typographyType="heading_2"
            app:typographyWeight="bold"
            android:text="OVO kamu belum aktif" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/desc_ovo_activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl3"
            android:gravity="center"
            android:textColor="#ae31353b"
            app:typographyType="body_2"
            android:text="Lakukan aktivasi segera karena diskon ini berlaku untuk pembayaran dengan OVO." />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_topup_activation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aktivasi OVO"
            android:textStyle="bold"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_learn_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:text="Pelajari Selengkapnya"
            android:textStyle="bold"
            app:unifyButtonSize="large"
            app:unifyButtonType="alternate"
            app:unifyButtonVariant="ghost" />

        <TextView
            android:id="@+id/tnc_ovo"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text="@string/wallet_announcement_ovo_text_tnc" />

    </LinearLayout>

</ScrollView>