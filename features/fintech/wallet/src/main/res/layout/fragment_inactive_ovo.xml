<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/unify_space_24"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_ovo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wallet_inactive_ovo_dp_210"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginBottom="@dimen/unify_space_16"
            android:contentDescription="@null"
            app:srcCompat="@drawable/wallet_ic_intro_activation" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_ovo_activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_2"
            app:typographyWeight="bold"
            android:text="@string/wallet_ovo_kamu_belum_aktif" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/desc_ovo_activation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginBottom="@dimen/unify_space_24"
            android:gravity="center"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_2"
            android:text="@string/wallet_ovo_activation_desc" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_topup_activation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wallet_aktivasi_ovo"
            android:textStyle="bold"
            app:unifyButtonSize="large"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_learn_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_8"
            android:text="@string/wallet_learn_more"
            android:textStyle="bold"
            app:unifyButtonSize="large"
            app:unifyButtonType="alternate"
            app:unifyButtonVariant="ghost" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tnc_ovo"
            android:textColor="@color/Unify_N700_44"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginRight="@dimen/unify_space_16"
            android:layout_marginBottom="@dimen/unify_space_16"
            android:gravity="center_horizontal"
            android:text="@string/wallet_announcement_ovo_text_tnc" />

    </LinearLayout>

</ScrollView>