<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/hc_camera_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera"
            android:layout_width="@dimen/dp_340"
            android:layout_height="@dimen/dp_220"
            android:layout_gravity="center"
            android:keepScreenOn="true"
            app:cameraAudio="on"
            app:cameraGestureLongTap="none"
            app:cameraGesturePinch="zoom"
            app:cameraGestureScrollHorizontal="exposureCorrection"
            app:cameraGestureScrollVertical="none"
            app:cameraGestureTap="focusWithMarker"
            app:cameraGrid="off"
            app:cameraPlaySounds="true"
            app:cameraSessionType="picture" />

    </FrameLayout>


    <ImageView
        android:id="@+id/iv_image_captured"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_220"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <com.tokopedia.design.component.RectangleOverlayView
        android:id="@+id/cicleOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fg_color="@color/black_99"
        app:inset_distance="@dimen/dp_20"
        app:outline_img="@drawable/img_frame_id"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_20">

        <ImageView
            android:id="@+id/button_cancel"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_close_white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/desc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/clr_80000000"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginTop="@dimen/dp_48"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:lineSpacingExtra="@dimen/sp_8"
            android:gravity="center_horizontal"
            android:text="@string/foto_ktp_wni"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/clr_80000000"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/white"
            android:layout_below="@+id/desc_1"
            android:lineSpacingExtra="@dimen/sp_8"
            android:gravity="center_horizontal"
            android:text="@string/pstkn_info"
            />

        <include
            layout="@layout/camera_action_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


</FrameLayout>
