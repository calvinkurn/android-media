<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_captured_image_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16"
        android:visibility="gone"
        android:weightSum="2">

        <TextView
            android:id="@+id/retake_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/bg_rounded_corner_white"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="@string/hc_camera_recapture_text"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/continue_upload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/white_button_rounded"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="@string/hc_image_upload"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_camera_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iv_flash_control"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_toStartOf="@+id/iv_capture_image"
            android:layout_toLeftOf="@+id/iv_capture_image"
            android:padding="@dimen/dp_4"
            android:src="@drawable/ic_flash_auto" />


        <ImageView
            android:id="@+id/iv_capture_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:padding="@dimen/dp_4"
            android:src="@drawable/ic_capture_image" />


        <ImageView
            android:id="@+id/iv_reverse_camera"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_toEndOf="@+id/iv_capture_image"
            android:layout_toRightOf="@+id/iv_capture_image"
            android:padding="@dimen/dp_4"
            android:src="@drawable/ic_reverse_camera" />

    </RelativeLayout>
</FrameLayout>