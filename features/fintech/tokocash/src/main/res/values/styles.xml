<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Large">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DefaultLabelText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/mf_text_size_regular</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="DefaultValueText" parent="Normal">
        <item name="android:textSize">@dimen/mf_text_size_regular</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="AutoSweepTabLayout" parent="Bold">
        <item name="android:textSize">@dimen/mf_text_size_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MediumValueText" parent="Bold">
        <item name="android:textSize">@dimen/mf_text_size_regular</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="HeaderText" parent="Bold">
        <item name="android:textSize">@dimen/mf_text_size_large</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="SubmitButton" parent="Bold">
        <item name="android:textSize">@dimen/mf_text_size_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AutoSweepSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/tkpd_main_green</item>
    </style>

</resources>
