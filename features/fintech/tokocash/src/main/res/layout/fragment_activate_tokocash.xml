<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsv_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:ignore="ObsoleteLayoutParam">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_activation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_15"
            android:padding="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorSheetTitle"
                android:lineSpacingExtra="5sp"
                android:text="@string/tokocash_desc_activation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/tokocash_phone_number"
                android:textColor="@color/font_black_disabled_38"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:id="@+id/wallet_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separator_activation"
                android:layout_marginBottom="@dimen/dp_15"/>

            <Button
                android:id="@+id/activation_btn"
                style="@style/Button.Submit.Orange"
                android:text="@string/tokocash_activation"
                android:layout_margin="0dp"/>

            <TextView
                android:id="@+id/syarat_ketentuan_tokocash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/font_black_disabled_38"
                android:text="@string/syarat_ketentuan_tokocash" />

        </LinearLayout>

        <include
            layout="@layout/view_holder_benefit"
            android:layout_below="@id/layout_activation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout_activation"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>