<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_4"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:subtitleTextAppearance="?subtitleTextAppearance"
        app:titleTextAppearance="?titleTextAppearance" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottom_pay_layout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:background="@drawable/qrpayment_bg_white_border_shadow"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/field_merchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ke : "
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/field_merchant"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_16"
                    tools:text="Pohon Terang" />

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/merchant_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/merchant_name"
                    android:layout_below="@+id/merchant_name"
                    android:layout_marginTop="@dimen/dp_8"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_12"
                    app:drawableLeftCompat="@drawable/ic_tokocash_phone"
                    tools:text="0872721313718" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_nominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_header"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:id="@+id/title_nominal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Pembayaran"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/field_rupiah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/value_nominal"
                    android:layout_alignTop="@+id/value_nominal"
                    android:layout_below="@+id/title_nominal"
                    android:gravity="center_vertical"
                    android:text="Rp "
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/value_nominal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_nominal"
                    android:layout_toRightOf="@+id/field_rupiah"
                    android:background="@color/transparent"
                    android:hint="0"
                    android:inputType="number"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_22" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/value_nominal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/separator_grey" />

                <TextView
                    android:id="@+id/tokocash_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/separator"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:text="TokoCash Balance : Rp. 75.000"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/title_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tokocash_value"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Catatan (opsional)"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/sp_12" />

                <EditText
                    android:id="@+id/notes_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_notes"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/transparent"
                    android:hint="Masukkan catatan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/notes_value"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/separator_grey" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_pay_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/pay_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/bg_grey_border_black"
            android:enabled="false"
            android:text="Bayar"
            android:textAllCaps="false"
            android:textColor="@color/grey_nonactive_text" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>