<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_4"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:subtitleTextAppearance="?subtitleTextAppearance"
        app:titleTextAppearance="?titleTextAppearance" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_success_transaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="@string/success_payment_header"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/fontl"
                    tools:text="Donat Pohon Terang" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dp_5"
                    android:scaleType="centerCrop"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="qr_success_animation.json"
                    app:lottie_loop="true" />

                <TextView
                    android:id="@+id/amount_transaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dp_5"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/fontvl"
                    tools:text="Rp. 8.000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/success_payment_time"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/fontvs" />

                    <TextView
                        android:id="@+id/time_transaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"
                        tools:text="20 Nov 2017 |  2.03 AM" />

                    <View
                        android:id="@+id/separator_time"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/time_transaction"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/separator_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separator_time"
                        android:text="@string/success_payment_transaction_id"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/fontvs" />

                    <TextView
                        android:id="@+id/transaction_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/separator_time"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/fontvs"
                        tools:text="214303040607" />

                    <View
                        android:id="@+id/separator_trans_id"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/transaction_id"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/separator_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separator_trans_id"
                        android:text="@string/success_payment_balance"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/fontvs" />

                    <TextView
                        android:id="@+id/balance_tokocash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/separator_trans_id"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/fontvs"
                        tools:text="Rp 35.000" />

                    <View
                        android:id="@+id/separator_balance"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/balance_tokocash"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/separator_grey" />

                    <Button
                        android:id="@+id/button_back_to_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/separator_balance"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/green_button_rounded_unify"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_30"
                        android:paddingRight="@dimen/dp_30"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/btn_back_to_home"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fonts" />

                    <TextView
                        android:id="@+id/help_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/button_back_to_home"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_30"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/fontvs"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_failed_transaction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                app:srcCompat="@drawable/history_ic_failed_transaction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/failed_payment_header"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/font_large" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/failed_payment_body"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/fontvs" />

                <Button
                    android:id="@+id/button_back_scanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator_balance"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/green_button_rounded_unify"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_10"
                    android:text="@string/failed_payment_retry"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fonts" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>