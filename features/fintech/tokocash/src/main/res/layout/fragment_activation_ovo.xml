<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_15">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/activate_ic_tokocash_benefit"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/activation_ovo_title"/>

    <TextView
        android:id="@+id/activation_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        tools:text="@string/activation_ovo_desc"/>

    <Button
        android:id="@+id/activation_ovo_btn"
        style="@style/Button.Submit.Green"
        android:text="@string/activation_ovo_btn_activate" />

    <Button
        android:id="@+id/change_number_btn"
        style="@style/Button.Submit.White.GreenBorderFull"
        android:text="@string/activation_ovo_btn_change_number"/>

</LinearLayout>