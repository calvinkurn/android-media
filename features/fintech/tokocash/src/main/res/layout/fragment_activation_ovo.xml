<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            app:srcCompat="@drawable/wallet_ic_activation_ovo" />

        <TextView
            style="@style/TextView.TitleMedium.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center_horizontal"
            android:text="@string/activation_ovo_title" />

        <TextView
            android:id="@+id/activation_desc"
            style="@style/TextView.Small.BlackSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center_horizontal"
            tools:text="@string/activation_ovo_desc" />

        <Button
            android:id="@+id/activation_ovo_btn"
            style="@style/Button.Submit.Green"
            android:text="@string/activation_ovo_btn_activate" />

        <Button
            android:id="@+id/change_number_btn"
            android:textColor="@color/font_black_disabled_38"
            style="@style/Button.Submit.White.Border"
            android:text="@string/activation_ovo_btn_change_number" />

    </LinearLayout>

</ScrollView>