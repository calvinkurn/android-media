<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <ImageView
            android:id="@+id/icon_item_history"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/ic_tokocash_icon" />

        <TextView
            android:id="@+id/title_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_item_history"
            android:gravity="center_vertical"
            android:text="Admin Feed"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_16"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/dp_5"/>

        <TextView
            android:id="@+id/desc_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title_item_history"
            android:layout_below="@+id/title_item_history"
            android:layout_toLeftOf="@+id/price_item_history"
            android:layout_toStartOf="@+id/price_item_history"
            android:text=""
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/notes_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title_item_history"
            android:layout_below="@+id/desc_item_history"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toLeftOf="@+id/price_item_history"
            android:layout_toStartOf="@+id/price_item_history"
            android:text=""
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12" />

        <View
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/title_item_history"
            android:layout_below="@+id/notes_item_history"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/grey_300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title_item_history"
            android:layout_below="@+id/separator1"
            android:text="Nominal Transaksi"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/price_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/separator1"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            tools:text="- Rp 150.000"
            android:textColor="@color/red_500"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/title_item_history"
            android:layout_below="@+id/price_item_history"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/grey_300" />

        <TextView
            android:id="@+id/transaction_info_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title_item_history"
            android:layout_below="@+id/separator2"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            tools:text="TokoCash TxID #99305dsadadasdadadadad17"
            android:textColor="@color/black_36"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/bantuan_btn"
                style="@style/Button.Submit.White.Border"
                android:text="Bantuan"
                android:textAllCaps="false"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:id="@+id/button_opsi"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>