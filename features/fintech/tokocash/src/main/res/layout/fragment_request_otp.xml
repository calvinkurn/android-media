<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_15"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:lineSpacingExtra="5sp"
        android:text="@string/tokocash_desc_request_otp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/tokocash_phone_number"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/wallet_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/separator_activation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/send_sms_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/Button.Submit.Green"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:paddingTop="@dimen/dp_10"
            android:textSize="@dimen/sp_13"
            android:text="@string/tokocash_send_sms_verification"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible"/>

        <Button
            android:id="@+id/repeat_send_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/activate_grey_button_rounded"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:paddingTop="@dimen/dp_10"
            android:textAllCaps="false"
            android:textColor="@color/font_black_secondary_54"
            android:textSize="@dimen/sp_13"
            android:enabled="false"
            android:visibility="gone"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/input_otp_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_14"
            android:text="@string/title_otp" />


        <com.tokopedia.design.widget.PinEntryEditText
            android:id="@+id/input_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="6"
            android:paddingBottom="@dimen/dp_10"
            android:textIsSelectable="false"
            android:textSize="28sp"
            app:pinLineColors="@drawable/pin_line_colors" />

    </LinearLayout>

    <Button
        android:id="@+id/verification_btn"
        android:layout_width="match_parent"
        style="@style/Button.Submit.White.Stroke"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/activate_grey_button_rounded"
        android:minHeight="0dp"
        android:text="@string/tokocash_button_verification"
        android:textAllCaps="false"
        android:textColor="@color/text_grey_activation"
        android:textSize="@dimen/sp_12"
        android:enabled="false"/>

</LinearLayout>