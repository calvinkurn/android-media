<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivPartnerLogo"
        android:layout_width="@dimen/unify_space_48"
        android:layout_height="@dimen/unify_space_48"
        android:scaleType="centerInside"
        app:unify_image_corner_radius="0"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/unify_space_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitlePaymentPartner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kredivo"
        android:textSize="@dimen/unify_font_14"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginStart="@dimen/payLater_register_title_padding"
        app:layout_constraintBottom_toTopOf="@+id/tvDescription"
        app:layout_constraintStart_toEndOf="@+id/ivPartnerLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/paymenyOfferLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingStart="@dimen/unify_space_4"
        android:paddingTop="@dimen/unify_space_2"
        android:paddingEnd="@dimen/unify_space_4"
        android:paddingBottom="@dimen/unify_space_2"
        android:visibility="gone"
        android:text="Aktif"
        app:labelType="general_dark_blue"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitlePaymentPartner"
        app:layout_constraintStart_toEndOf="@+id/tvTitlePaymentPartner"
        app:layout_constraintTop_toTopOf="@+id/tvTitlePaymentPartner"
        app:typographyType="small" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescription"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_2"
        android:layout_marginBottom="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_8"
        android:text="@string/payLater_default_subtitle"
        android:textSize="@dimen/unify_font_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivActionArrow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvTitlePaymentPartner"
        app:layout_constraintTop_toBottomOf="@+id/tvTitlePaymentPartner"
        app:typographyType="body_3" />

    <ImageView
        android:id="@+id/ivActionArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_paylater_register_right_arrow" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerUnify"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="@dimen/payLater_divider_height_dp_1"
        android:background="@color/paylater_grey_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>