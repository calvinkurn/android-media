<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivPaylaterPartner"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitlePaylaterPartner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/unify_font_14"
        app:layout_constraintStart_toEndOf="@+id/ivPaylaterPartner"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="@string/kredivo" />

    <com.tokopedia.unifycomponents.Label
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingStart="@dimen/spacing_lvl2"
        android:paddingTop="@dimen/spacing_lvl1"
        android:paddingEnd="@dimen/spacing_lvl2"
        android:paddingBottom="@dimen/spacing_lvl1"
        app:labelType="general_dark_blue"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitlePaylaterPartner"
        app:layout_constraintStart_toEndOf="@+id/tvTitlePaylaterPartner"
        app:layout_constraintTop_toTopOf="@+id/tvTitlePaylaterPartner"
        app:typographyType="small"
        tools:text="Aktif" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSignUpNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/unify_font_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTitlePaylaterPartner"
        app:layout_constraintTop_toBottomOf="@+id/tvTitlePaylaterPartner"
        app:typographyType="body_3"
        tools:text="Daftar sekarang" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_paylater_daftar_right_arrow" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/paylater_grey_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvSignUpNow"/>


</androidx.constraintlayout.widget.ConstraintLayout>