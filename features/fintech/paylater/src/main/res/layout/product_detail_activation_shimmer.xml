<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/productInfoActivationShimmer"
        layout="@layout/product_detail_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_2"
        android:layout_marginLeft="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginRight="@dimen/unify_space_16"
        app:layout_constraintTop_toBottomOf="@id/productInfoActivationShimmer" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/quantityShimmer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pay_later_dp_20"
        android:layout_marginLeft="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/pay_later_dp_20"
        android:layout_marginRight="@dimen/unify_space_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_one"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pay_later_dp_5"
        android:layout_marginTop="@dimen/pay_later_dp_20"
        app:layout_constraintTop_toBottomOf="@id/quantityShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>