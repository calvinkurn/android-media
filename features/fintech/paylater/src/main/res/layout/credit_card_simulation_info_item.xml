<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/unify_space_2"
    android:layout_marginEnd="@dimen/unify_space_2">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/unify_space_2"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_credit_card_popular"
        app:unify_image_corner_radius="0" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/ccSimulationCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_2"
        app:card_type="border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSimulationCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/unify_space_128">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvInstallmentHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/credit_card_dp_10"
                android:layout_marginTop="@dimen/unify_space_12"
                android:layout_marginEnd="@dimen/credit_card_dp_10"
                android:lineSpacingExtra="4sp"
                android:paddingEnd="@dimen/unify_space_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3"
                tools:text="@string/credit_card_simulation_card_header" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvInstallmentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvMonthlyTenure"
                app:layout_constraintStart_toStartOf="@id/tvInstallmentHeader"
                app:layout_constraintTop_toTopOf="@+id/tvMonthlyTenure"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Rp1.575.000" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvMonthlyTenure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_2"
                android:layout_marginTop="@dimen/unify_space_2"
                android:layout_marginEnd="@dimen/credit_card_dp_10"
                android:layout_marginBottom="@dimen/unify_space_12"
                android:textColor="@color/Unify_N700_68"
                android:paddingEnd="@dimen/unify_space_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvInstallmentPrice"
                app:layout_constraintTop_toBottomOf="@id/tvInstallmentHeader"
                app:typographyType="body_3"
                tools:text="/bulang" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>
</androidx.constraintlayout.widget.ConstraintLayout>

