<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/gateway_activation_shimmer"
        layout="@layout/product_detail_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/tenureShimmer1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_64"
        app:layout_constraintTop_toBottomOf="@+id/gateway_activation_shimmer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/unify_space_128"
                android:layout_height="@dimen/unify_space_8"
                android:layout_marginLeft="@dimen/unify_space_16"
                android:layout_marginTop="@dimen/unify_space_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/unify_space_64"
                android:layout_height="@dimen/unify_space_8"
                android:layout_marginLeft="@dimen/unify_space_16"
                android:layout_marginBottom="@dimen/unify_space_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/unify_space_16"
                android:layout_height="@dimen/unify_space_8"
                android:layout_marginRight="@dimen/unify_space_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="rect" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/tenureShimmer2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_64"
        app:layout_constraintTop_toBottomOf="@+id/tenureShimmer1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/unify_space_128"
                android:layout_height="@dimen/unify_space_8"
                android:layout_marginLeft="@dimen/unify_space_16"
                android:layout_marginTop="@dimen/unify_space_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/unify_space_64"
                android:layout_height="@dimen/unify_space_8"
                android:layout_marginLeft="@dimen/unify_space_16"
                android:layout_marginBottom="@dimen/unify_space_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/unify_space_16"
                android:layout_height="@dimen/unify_space_8"
                android:layout_marginRight="@dimen/unify_space_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="rect" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.tokopedia.unifycomponents.CardUnify>


    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/tenureShimmer3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_64"
        app:layout_constraintTop_toBottomOf="@+id/tenureShimmer2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/unify_space_128"
                android:layout_height="@dimen/unify_space_8"
                android:layout_marginLeft="@dimen/unify_space_16"
                android:layout_marginTop="@dimen/unify_space_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/unify_space_64"
                android:layout_height="@dimen/unify_space_8"
                android:layout_marginLeft="@dimen/unify_space_16"
                android:layout_marginBottom="@dimen/unify_space_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:layout_width="@dimen/unify_space_16"
                android:layout_height="@dimen/unify_space_8"
                android:layout_marginRight="@dimen/unify_space_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:loader_type="rect" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.tokopedia.unifycomponents.CardUnify>


</androidx.constraintlayout.widget.ConstraintLayout>