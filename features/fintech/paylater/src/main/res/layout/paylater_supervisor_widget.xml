<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/unify_space_32">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPartnerRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:paddingTop="@dimen/unify_space_4"
        android:text="@string/pay_later_simulation_supervised_text"
        app:layout_constraintBottom_toBottomOf="@+id/ivSupervisor"
        app:layout_constraintEnd_toStartOf="@+id/ivSupervisor"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivSupervisor"
        app:typographyType="small" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivSupervisor"
        android:layout_width="@dimen/unify_space_64"
        android:layout_height="@dimen/unify_space_24"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/unify_space_24"
        android:scaleType="centerInside"
        android:src="@drawable/ic_paylater_financial_authority"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvPartnerRegistration"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="0" />

</androidx.constraintlayout.widget.ConstraintLayout>