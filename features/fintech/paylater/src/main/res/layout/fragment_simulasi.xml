<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:background="@color/Neutral_N0"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitlePenawaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:text="@string/paylater_title_simalisi"
            android:textSize="@dimen/unify_font_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_4"
            app:typographyWeight="bold" />

        <LinearLayout
            android:id="@+id/llPayLaterPartner"
            android:layout_width="84dp"
            android:layout_height="270dp"
            android:background="#F3F4F5"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitlePenawaran" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:layout_width="@dimen/spacing_lvl1"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/llPayLaterPartner"
            app:layout_constraintTop_toTopOf="@id/llPayLaterPartner"
            app:layout_constraintBottom_toBottomOf="@+id/llPayLaterPartner"/>


        <HorizontalScrollView
            android:id="@+id/hsvInstallment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/llPayLaterPartner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/llPayLaterPartner"
            app:layout_constraintTop_toTopOf="@id/llPayLaterPartner"
            app:layout_constraintVertical_bias="1.0">

            <TableLayout
                android:id="@+id/tlInstallmentTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow>

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="25dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="25dp"
                        android:paddingBottom="18dp"
                        android:text="Cicil 3x"
                        android:textSize="@dimen/unify_font_12"
                        app:typographyType="heading_5"
                        app:typographyWeight="bold" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="25dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="25dp"
                        android:paddingBottom="18dp"
                        android:text="Cicil 3x"
                        android:textSize="@dimen/unify_font_12"
                        app:typographyType="heading_5"
                        app:typographyWeight="bold" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="24dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="18dp"
                        android:text="Cicil 3x"
                        android:textSize="@dimen/unify_font_12"
                        app:typographyType="heading_5"
                        app:typographyWeight="bold" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="24dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="18dp"
                        android:text="Cicil 3x"
                        android:textSize="@dimen/unify_font_12"
                        app:typographyType="heading_5"
                        app:typographyWeight="bold" />

                </TableRow>

                <TableRow>

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="14dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="18dp"
                        android:text="Rp2.750.000"
                        android:textSize="@dimen/unify_font_12"
                        app:typographyType="body_3" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="14dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="18dp"
                        android:text="Rp2.750.000"
                        android:textSize="@dimen/unify_font_12"
                        app:typographyType="body_3" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="14dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="18dp"
                        android:text="Rp2.750.000"
                        android:textSize="@dimen/unify_font_12"
                        app:typographyType="body_3" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="14dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="18dp"
                        android:text="Rp2.750.000"
                        android:textSize="@dimen/unify_font_12"
                        app:typographyType="body_3" />
                </TableRow>

                <TableRow></TableRow>

                <TableRow></TableRow>
            </TableLayout>

        </HorizontalScrollView>

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/tickerSimulasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:descriptionText="@string/paylater_simulasi_ticker_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llPayLaterPartner"
            app:tickerType="information" />

        <include
            android:id="@+id/paylaterDaftarWidget"
            layout="@layout/paylater_daftar_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDaftarPayLater" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnDaftarPayLater"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Daftar PayLater Sekarang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tickerSimulasi"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPartnerRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/paylater_simulasi_supervised_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paylaterDaftarWidget"
            app:typographyType="small" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPartnerRegistration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPartnerRegistration"
            app:layout_constraintTop_toTopOf="@+id/tvPartnerRegistration"
            tools:src="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>