<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCircleGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_oval_green" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/ivCircleGreen"
        app:layout_constraintEnd_toEndOf="@+id/ivCircleGreen"
        app:layout_constraintStart_toStartOf="@+id/ivCircleGreen"
        app:layout_constraintTop_toTopOf="@+id/ivCircleGreen"
        app:typographyType="heading_5" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:text="Pilih barang yang ingin dibeli, dan pilih metode pembayaran Kredivo di halaman Pembayaran."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCircleGreen"
        app:layout_constraintTop_toTopOf="@+id/ivCircleGreen"
        app:typographyType="body_2" />

    <!--
    hide this for last item in recycler view
    -->
    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerVertical"
        android:layout_width="2dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ivCircleGreen"
        app:layout_constraintBottom_toBottomOf="@+id/tvDescription"
        app:layout_constraintStart_toStartOf="@id/tvNumber"
        app:layout_constraintEnd_toEndOf="@id/tvNumber"/>

</androidx.constraintlayout.widget.ConstraintLayout>