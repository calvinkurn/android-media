<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/unify_space_16"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/payLaterOffersGlobalError"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_0"
        android:visibility="gone"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitlePenawaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:text="@string/pay_later_title_detail"
        android:textSize="@dimen/unify_font_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/titleShimmer"
        android:layout_width="@dimen/pay_later_shimmer_width_dp_256"
        android:layout_height="@dimen/unify_space_24"
        android:layout_marginStart="@dimen/unify_space_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
