<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payLaterSimulationCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:card_type="border"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSimulationCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/unify_space_128">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvInstallmentHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/Unify_NN950"
            app:layout_goneMarginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/labelInstallment"
            app:typographyType="body_2"
            tools:text="30 hari/akhir bulan" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/labelInstallment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvInstallmentHeader"
            app:layout_constraintTop_toTopOf="@id/tvInstallmentHeader"
            app:layout_constraintBottom_toBottomOf="@id/tvInstallmentHeader"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvMonthlyTenure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingEnd="10dp"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvInstallmentHeader"
            app:layout_constraintTop_toBottomOf="@id/tvInstallmentHeader"
            app:typographyType="body_3"
            tools:text="Mulai Rp1.250.000" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>

