<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:layout_marginTop="@dimen/unify_space_16"
    android:orientation="vertical">

    <View
        android:id="@+id/greenView"
        android:layout_width="@dimen/unify_space_4"
        android:layout_height="@dimen/unify_space_0"
        android:background="@color/Unify_G500"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitlePdpInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitlePdpInfo" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitlePdpInfo"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:text="Cicilan bunga 0%"
        android:textSize="@dimen/unify_font_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/greenView"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescription"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:text="Berikut ini daftar min. transaksi untuk penggunaan kartu kredit: "
        android:textColor="@color/Unify_N700_68"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tvTitlePdpInfo"
        app:layout_constraintStart_toStartOf="@id/tvTitlePdpInfo"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePdpInfo"
        app:typographyType="body_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPdpInfoContent"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        app:layout_constraintEnd_toEndOf="@id/tvTitlePdpInfo"
        app:layout_constraintStart_toStartOf="@id/tvTitlePdpInfo"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />

    <LinearLayout
        android:id="@+id/llNotes"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/tvTitlePdpInfo"
        app:layout_constraintStart_toStartOf="@+id/tvTitlePdpInfo"
        app:layout_constraintTop_toBottomOf="@+id/rvPdpInfoContent" />


    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerInstallment"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="@dimen/pay_later_divider_height_dp_1"
        android:layout_marginTop="@dimen/unify_space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvTitlePdpInfo"
        app:layout_constraintTop_toBottomOf="@+id/llNotes" />

</androidx.constraintlayout.widget.ConstraintLayout>