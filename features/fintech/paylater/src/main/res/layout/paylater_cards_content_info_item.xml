<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/unify_space_4">

    <ImageView
        android:id="@+id/ivBenifitsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/tvBenefitsDesc"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvBenefitsDesc"
        app:srcCompat="@drawable/ic_paylater_card_info_check" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBenefitsDesc"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/payLater_benefit_margin_dp_10"
        android:layout_marginTop="@dimen/payLater_benefit_margin_dp_6"
        android:layout_marginEnd="@dimen/unify_space_12"
        android:lineSpacingExtra="@dimen/unify_space_4"
        android:paddingBottom="@dimen/payLater_benefit_margin_dp_6"
        android:textColor="@color/Unify_N700_68"
        android:textSize="@dimen/unify_font_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBenifitsHeader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:typographyType="body_3"
        tools:text="Limit hingga Rp30 Juta" />

</androidx.constraintlayout.widget.ConstraintLayout>