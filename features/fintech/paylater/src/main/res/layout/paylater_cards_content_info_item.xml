<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_4">

    <ImageView
        android:id="@+id/ivBenifitsHeader"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/tvBenefitsDesc"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvBenefitsDesc"
        app:srcCompat="@drawable/ic_paylater_card_info_check" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBenefitsDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        android:lineSpacingExtra="@dimen/dp_3"
        android:textColor="@color/Unify_N700_68"
        android:textSize="@dimen/unify_font_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBenifitsHeader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:typographyType="body_3"
        tools:text="Biaya layanan 2% dan biaya tambahan 1% untuk 30 hari. Biaya layanan 1.5% untuk cicilan 3, 6, dan 12 bulan" />

</androidx.constraintlayout.widget.ConstraintLayout>