<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/productDetail"
        layout="@layout/product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/productInfoShimmer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginBottom="@dimen/pay_later_margin_dp_10"
        app:layout_constraintBottom_toBottomOf="@id/productDetail"
        app:layout_constraintLeft_toLeftOf="@id/productDetail"
        app:layout_constraintRight_toRightOf="@id/productDetail"
        app:layout_constraintTop_toTopOf="@id/productDetail"
        app:loader_type="rect"
        tools:visibility="gone" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/payLaterBorder"
        android:layout_width="match_parent"
        android:background="@color/Unify_NN200"
        android:layout_height="@dimen/pay_later_divider_height_dp_1"
        app:layout_constraintTop_toBottomOf="@id/productDetail" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPayLaterSimulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:orientation="horizontal"
        android:paddingStart="@dimen/pay_later_margin_dp_10"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/payLaterBorder"
        tools:itemCount="4"
        tools:listitem="@layout/paylater_simulation_tenure_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPayLaterOption"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/unify_space_8"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/seeMore"
        app:layout_constraintTop_toBottomOf="@+id/rvPayLaterSimulation"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="2"
        tools:listitem="@layout/paylater_partner_card_item" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/seeMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginBottom="@dimen/unify_space_12"
        android:text="Lihat 3 lainnya"
        app:layout_constraintBottom_toTopOf="@+id/superVisorSeparator"
        app:unifyButtonSize="medium"
        app:unifyButtonType="alternate"
        app:unifyButtonVariant="ghost" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/superVisorSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_8"
        app:layout_constraintBottom_toTopOf="@id/supervisorWidget" />

    <include
        android:id="@+id/supervisorWidget"
        layout="@layout/paylater_supervisor_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


