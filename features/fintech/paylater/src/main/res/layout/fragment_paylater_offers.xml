<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:id="@+id/mainContent"
        android:orientation="vertical"
        android:paddingTop="@dimen/unify_space_8">
        <com.tokopedia.globalerror.GlobalError
            android:id="@+id/payLaterOffersGlobalError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.empty_state.EmptyStateUnify
            android:id="@+id/emptyStateError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyEmptyStateImageDrawable="@drawable/ic_paylater_terms_not_matched"
            app:unifyEmptyStatePrimaryCTAText="@string/title_try_again"
            app:unifyEmptyStateTitle="@string/pay_later_something_went_wrong" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitleSimulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:text="@string/pay_later_duration_to_payoff"
            android:textSize="@dimen/unify_font_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="bold" />


        <com.tokopedia.sortfilter.SortFilter
            android:id="@+id/sortFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleSimulation"
            app:sort_filter_relationship="OR"
            app:sort_filter_type="quick" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvAvailablePaylater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:text="@string/pay_later_installment_used"
            android:textSize="@dimen/unify_font_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sortFilter"
            app:typographyType="body_2"
            app:typographyWeight="bold" />


        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/sortShimmer"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleSimulation"
            app:loader_type="rect" />


        <LinearLayout
            android:id="@+id/llShimmerLayout"
            android:layout_width="match_parent"
            android:layout_height="448dp"
            android:layout_marginLeft="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAvailablePaylater">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/productOfferFullShimmer"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                app:loader_type="rect" />


            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/productOfferHalfShimmer"
                android:layout_width="@dimen/unify_space_0"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/unify_space_16"
                android:layout_weight="0.1"
                app:loader_type="rect" />

        </LinearLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/payLaterOffersShimmerGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids=" llShimmerLayout,sortShimmer" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/payLaterDataGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:constraint_referenced_ids=" paymentOptionViewPager,tvAvailablePaylater,footerInfo" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/paymentOptionViewPager"
            android:layout_width="wrap_content"
            android:layout_height="560dp"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_16"
            android:clipToPadding="false"
            android:paddingStart="@dimen/unify_space_16"
            android:paddingEnd="@dimen/unify_space_16"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAvailablePaylater" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/unify_space_32"
            android:layout_marginBottom="@dimen/unify_space_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/footerInfo"
            app:layout_constraintTop_toBottomOf="@id/paymentOptionViewPager"
            >
            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                app:typographyType="small"
                android:text="@string/pay_later_supervised_by"
                />
            <ImageView
                android:layout_width="61dp"
                android:layout_height="24dp"
                android:src="@drawable/superviser_partner"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

