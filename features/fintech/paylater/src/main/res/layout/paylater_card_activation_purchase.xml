<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/tokopediaMascort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        app:card_type="shadow"
        app:layout_constraintEnd_toStartOf="@+id/imageUnify"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tokopedia_mascot"
            app:unify_image_type="circle" />

    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageUnify"
        android:layout_width="54dp"
        android:layout_height="@dimen/dp_10"
        android:src="@drawable/ic_paylater_tokopedia_to_gopay"
        app:layout_constraintBottom_toBottomOf="@+id/tokopediaMascort"
        app:layout_constraintEnd_toStartOf="@+id/gopayMascort"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tokopediaMascort"
        app:layout_constraintTop_toTopOf="@+id/tokopediaMascort" />


    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/gopayMascort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_56"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        app:card_type="shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageUnify"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gopay_mascot"
            app:unify_image_type="circle" />

    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoToGoPayHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="51dp"
        android:gravity="center"
        android:text="Sambungin Gojek dulu, ya"
        android:textColor="@color/light_N700_96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokopediaMascort"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tokoToGoPaySubHeader"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginRight="@dimen/unify_space_16"
        android:gravity="center"
        android:text="Buat pakai GoPayLater Cicil, kamu perlu sambungin akun Gojek ke Tokopedia dulu. Cuma sebentar, kok!"
        android:textColor="@color/light_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokoToGoPayHeader"
        app:typographyType="body_1" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_24"
        android:layout_marginBottom="@dimen/unify_space_16"
        android:text="@string/pay_later_action_find_more"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tokoToGoPaySubHeader"
        app:unifyButtonSize="medium"
        app:unifyButtonType="alternate"
        app:unifyButtonVariant="filled"

        />


</androidx.constraintlayout.widget.ConstraintLayout>