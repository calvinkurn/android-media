<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/productImage"
        android:layout_width="@dimen/unify_space_48"
        android:layout_height="@dimen/unify_space_48"
        android:layout_marginLeft="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unify_space_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="2dp"
       app:layout_constraintTop_toTopOf="@id/productImage"
        app:layout_constraintLeft_toRightOf="@id/productImage"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Product name  jkef eersdljkbfjsidnsdbf sdbffljksdnkfnsdkjfnsdffknekjrf" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/unify_space_2"
        app:layout_constraintLeft_toRightOf="@id/productImage"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:typographyType="small"
        tools:text="0.5m" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/unify_space_2"
        android:layout_marginBottom="@dimen/unify_space_16"
        app:layout_constraintLeft_toRightOf="@id/productImage"
        app:layout_constraintTop_toBottomOf="@id/productVariant"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Rp 100" />

</androidx.constraintlayout.widget.ConstraintLayout>