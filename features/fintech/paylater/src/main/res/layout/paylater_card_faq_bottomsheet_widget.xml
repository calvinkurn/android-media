<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Neutral_N0">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPaylaterFaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/paylater_card_faq_item"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnSeeMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unifyButtonSize="small"
        app:unifyButtonVariant="ghost"
        app:unifyButtonType="alternate"
        android:text="Lihat Lebih Banyak"
        android:gravity="center"
        android:textSize="@dimen/unify_font_12"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/unify_space_12"
        app:layout_constraintTop_toBottomOf="@id/rvPaylaterFaq"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>