<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSimulationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:orientation="vertical"
        android:paddingBottom="@dimen/unify_space_32">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitleSimulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:text="@string/pay_later_simulation_header_title"
            android:textSize="@dimen/unify_font_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_4"
            app:typographyWeight="bold" />

        <View
            android:id="@+id/offerLabel"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="@dimen/unify_space_0"
            android:background="@drawable/bg_credit_card_installment_interest"
            app:layout_constraintBottom_toBottomOf="@id/tvSubtitleSimulation"
            app:layout_constraintEnd_toEndOf="@id/tvSubtitleSimulation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSubtitleSimulation" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvSubtitleSimulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_12"
            android:paddingTop="@dimen/unify_space_8"
            android:paddingEnd="@dimen/unify_space_16"
            android:paddingBottom="@dimen/unify_space_8"
            android:text="@string/pay_later_simulation_header_sub_title"
            android:textColor="@color/Unify_N0"
            app:layout_constraintStart_toStartOf="@+id/tvTitleSimulation"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleSimulation"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

        <LinearLayout
            android:id="@+id/llPayLaterPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_16"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleSimulation" />

        <HorizontalScrollView
            android:id="@+id/hsvInstallment"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="@dimen/unify_space_0"
            app:layout_constraintBottom_toBottomOf="@+id/llPayLaterPartner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/llPayLaterPartner"
            app:layout_constraintTop_toTopOf="@id/llPayLaterPartner"
            app:layout_constraintVertical_bias="1.0">

            <TableLayout
                android:id="@+id/tlInstallmentTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </TableLayout>

        </HorizontalScrollView>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivShadow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unify_space_0"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/llPayLaterPartner"
            app:layout_constraintEnd_toEndOf="@+id/llPayLaterPartner"
            app:layout_constraintStart_toEndOf="@+id/llPayLaterPartner"
            app:layout_constraintTop_toTopOf="@id/llPayLaterPartner"
            app:srcCompat="@drawable/ic_paylater_simulation_divider_shadow" />


        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/titleShimmer"
            android:layout_width="@dimen/pay_later_shimmer_width_dp_256"
            android:layout_height="@dimen/unify_space_16"
            android:layout_marginStart="@dimen/unify_space_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llPayLaterPartner"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/subTitleShimmer"
            android:layout_width="@dimen/pay_later_shimmer_width_dp_256"
            android:layout_height="@dimen/unify_space_16"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleShimmer"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/simulationShimmerView"
            android:layout_width="0dp"
            android:layout_height="270dp"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subTitleShimmer"
            app:loader_type="rect" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvRepaymentDescription"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="@string/pay_later_repayment_text"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/simulationShimmerView"
            app:typographyType="body_3" />

        <com.tokopedia.empty_state.EmptyStateUnify
            android:id="@+id/payLaterTermsEmptyView"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_16"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRepaymentDescription"
            app:unifyEmptyStateDescription="@string/pay_later_simulation_empty_view_description"
            app:unifyEmptyStateImageDrawable="@drawable/ic_paylater_terms_not_matched"
            app:unifyEmptyStateOrientation="vertical"
            app:unifyEmptyStatePrimaryCTAText=""
            app:unifyEmptyStateSecondaryCTAText=""
            app:unifyEmptyStateTitle="@string/pay_later_simulation_empty_view_title" />

        <com.tokopedia.globalerror.GlobalError
            android:id="@+id/simulationGlobalError"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payLaterTermsEmptyView" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/dividerVertical"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_16"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/simulationGlobalError" />

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/tickerSimulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:visibility="gone"
            app:closeButtonVisibility="gone"
            app:descriptionText="@string/pay_later_simulation_ticker_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerVertical"
            app:tickerType="information" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnDaftarPayLater"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="@string/pay_later_btn_text"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tickerSimulation"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

        <include
            android:id="@+id/paylaterDaftarWidget"
            layout="@layout/paylater_daftar_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDaftarPayLater" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/registerShimmer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unify_space_64"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paylaterDaftarWidget"
            app:loader_type="rect" />

        <include
            android:id="@+id/supervisorWidget"
            layout="@layout/paylater_supervisor_widget"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/unify_space_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerShimmer" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/simulationDataGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tvTitleSimulation,tvSubtitleSimulation, offerLabel, llPayLaterPartner,hsvInstallment,ivShadow,tvRepaymentDescription " />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/shimmerGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="titleShimmer, subTitleShimmer, simulationShimmerView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>