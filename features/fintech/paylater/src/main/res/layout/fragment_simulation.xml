<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSimulationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:background="@color/Neutral_N0"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.EmptyState
            android:id="@+id/payLaterTermsEmptyView"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_16"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyEmptyStateDescription="@string/paylater_simulation_empty_view_description"
            app:unifyEmptyStateImageDrawable="@drawable/ic_paylater_terms_not_matched"
            app:unifyEmptyStateOrientation="vertical"
            app:unifyEmptyStatePrimaryCTAText=""
            app:unifyEmptyStateSecondaryCTAText=""
            app:unifyEmptyStateTitle="@string/paylater_simulation_empty_view_title" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/dividerVertical"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_16"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payLaterTermsEmptyView" />

        <com.tokopedia.globalerror.GlobalError
            android:id="@+id/simulationGlobalError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitleSimulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:text="@string/payLater_simulation_header_title"
            android:textSize="@dimen/unify_font_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerVertical"
            app:typographyType="heading_4"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/titleShimmer"
            android:layout_width="@dimen/payLater_shimmer_width_dp_256"
            android:layout_height="@dimen/unify_space_16"
            android:layout_marginStart="@dimen/unify_space_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerVertical"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/simulationShimmerView"
            android:layout_width="0dp"
            android:layout_height="270dp"
            android:layout_marginTop="@dimen/unify_space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleShimmer"
            app:loader_type="rect" />

        <LinearLayout
            android:id="@+id/llPayLaterPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_16"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleSimulation" />

        <HorizontalScrollView
            android:id="@+id/hsvInstallment"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="@dimen/unify_space_0"
            app:layout_constraintBottom_toBottomOf="@+id/llPayLaterPartner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/llPayLaterPartner"
            app:layout_constraintTop_toTopOf="@id/llPayLaterPartner"
            app:layout_constraintVertical_bias="1.0">

            <TableLayout
                android:id="@+id/tlInstallmentTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </TableLayout>

        </HorizontalScrollView>

        <ImageView
            android:id="@+id/ivShadow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_paylater_simulation_divider_shadow"
            app:layout_constraintBottom_toBottomOf="@+id/llPayLaterPartner"
            app:layout_constraintEnd_toEndOf="@+id/llPayLaterPartner"
            app:layout_constraintStart_toEndOf="@+id/llPayLaterPartner"
            app:layout_constraintTop_toTopOf="@id/llPayLaterPartner" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/tableBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="llPayLaterPartner, simulationShimmerView" />


        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/tickerSimulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            app:closeButtonVisibility="gone"
            app:descriptionText="@string/paylater_simulation_ticker_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableBarrier"
            app:tickerType="information" />

        <include
            android:id="@+id/paylaterDaftarWidget"
            layout="@layout/paylater_daftar_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDaftarPayLater" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/registerShimmer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unify_space_64"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDaftarPayLater"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnDaftarPayLater"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="Daftar PayLater Sekarang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tickerSimulation"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />

        <include
            android:id="@+id/supervisorWidget"
            layout="@layout/paylater_supervisor_widget"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paylaterDaftarWidget" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/simulationDataGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tvTitleSimulation,llPayLaterPartner,hsvInstallment,ivShadow,tickerSimulation, supervisorWidget " />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/shimmerGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="titleShimmer, registerShimmer, simulationShimmerView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>