<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSimulationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:background="@color/Neutral_N0"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/payLaterSimulationProgress"
            android:layout_width="@dimen/unify_space_32"
            android:layout_height="@dimen/unify_space_32"
            app:loader_type="circular"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <com.tokopedia.unifycomponents.EmptyState
            android:id="@+id/payLaterTermsEmptyView"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            app:unifyEmptyStateTitle="@string/paylater_simulation_empty_view_title"
            app:unifyEmptyStateDescription="@string/paylater_simulation_empty_view_description"
            app:unifyEmptyStateOrientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/unify_space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:unifyEmptyStateImageDrawable="@drawable/unify_globalerrors_connection" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/dividerVertical"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="@dimen/unify_space_2"
            android:layout_marginTop="@dimen/unify_space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payLaterTermsEmptyView" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/payLaterTermsGroup"
            app:constraint_referenced_ids="dividerVertical, payLaterTermsEmptyView"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/payLaterSimulationTableGroup"
            app:constraint_referenced_ids="llPayLaterPartner, tvTitleSimulation, hsvInstallment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/payLaterSimulationGroup"
            app:constraint_referenced_ids="payLaterTermsGroup,payLaterSimulationTableGroup,tickerSimulation,paylaterDaftarWidget,tvPartnerRegistration, ivSupervisor, btnDaftarPayLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitleSimulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:text="@string/paylater_simulation_header_title"
            android:textSize="@dimen/unify_font_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerVertical"
            app:typographyType="heading_4"
            app:typographyWeight="bold" />

        <LinearLayout
            android:id="@+id/llPayLaterPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_16"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleSimulation" />


        <HorizontalScrollView
            android:id="@+id/hsvInstallment"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="@dimen/unify_space_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/llPayLaterPartner"
            app:layout_constraintTop_toTopOf="@id/llPayLaterPartner"
            app:layout_constraintBottom_toBottomOf="@+id/llPayLaterPartner"
            app:layout_constraintVertical_bias="1.0">

            <TableLayout
                android:id="@+id/tlInstallmentTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </TableLayout>

        </HorizontalScrollView>


        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/tickerSimulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            app:closeButtonVisibility="gone"
            app:descriptionText="@string/paylater_simulation_ticker_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llPayLaterPartner"
            app:tickerType="information" />

        <include
            android:id="@+id/paylaterDaftarWidget"
            layout="@layout/paylater_daftar_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDaftarPayLater" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnDaftarPayLater"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:text="Daftar PayLater Sekarang"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tickerSimulation"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPartnerRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_32"
            android:layout_marginBottom="@dimen/unify_space_32"
            android:text="@string/paylater_simulation_supervised_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivSupervisor"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paylaterDaftarWidget"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivSupervisor"
            android:layout_width="@dimen/unify_space_64"
            android:layout_height="@dimen/unify_space_24"
            android:layout_marginStart="@dimen/unify_space_8"
            android:scaleType="centerInside"
            app:unify_image_corner_radius="0"
            app:layout_constraintBottom_toBottomOf="@+id/tvPartnerRegistration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPartnerRegistration"
            app:layout_constraintTop_toTopOf="@+id/tvPartnerRegistration"
            tools:src="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>