<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payLaterSimulationCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:card_type="border"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSimulationCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/unify_space_128">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/tvInstallmentHeader"
            android:layout_width="@dimen/unify_space_64"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginStart="@dimen/credit_card_dp_10"
            android:layout_marginTop="@dimen/unify_space_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="rect" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/tvMonthlyTenure"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_8"
            android:layout_marginBottom="@dimen/unify_space_8"
            android:paddingEnd="@dimen/credit_card_dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvInstallmentHeader"
            app:layout_constraintTop_toBottomOf="@id/tvInstallmentHeader"
            app:loader_type="rect" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>

