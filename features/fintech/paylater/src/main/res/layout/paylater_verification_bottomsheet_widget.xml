<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Neutral_N0">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivPartner"
        android:layout_width="@dimen/payLater_application_status_dp_80"
        android:layout_height="@dimen/payLater_application_status_dp_62"
        android:layout_marginStart="@dimen/unify_space_16"
        android:scaleType="centerInside"
        app:unify_image_corner_radius="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvApplicationStatus"
        android:src="@drawable/ic_paylater_application_status_background"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvApplicationStatus"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginBottom="@dimen/unify_space_24"
        app:typographyType="body_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPartner"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pengajuanmu masih dalam proses verifikasi. Tunggu kabar selanjutnya ya.
        Verifikasi hingga: 24 Sept 2020" />

</androidx.constraintlayout.widget.ConstraintLayout>