<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.saldodetails">

    <application>
        <activity
            android:name=".feature_saldo_detail.SaldoDepositActivity"
            android:label="@string/saldo_detail_title_activity_people_deposit"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify">

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_global"
                    android:path="@string/path_saldo_deposit"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>

        </activity>

        <activity
            android:name=".commom.design.SaldoWebViewActivity"
            android:label="@string/saldo_detail_title_activity_people_deposit"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify"/>

        <activity
            android:name=".feature_intro.SaldoIntroActivity"
            android:label="@string/saldo_detail_title_header_saldo_intro"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify">

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_global"
                    android:path="@string/path_saldo_intro"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>

        </activity>

        <activity android:name=".feature_saldo_hold_info.SaldoHoldInfoActivity"
            android:screenOrientation="portrait"
            android:label="@string/saldo_info_toolbar_title"
            android:theme="@style/Theme.WhiteUnify"/>

        <activity android:name=".feature_detail_pages.withdrawal.SaldoWithdrawalDetailActivity"
            android:screenOrientation="portrait"
            android:label="@string/saldo_withdrawal_detail_title"
            android:theme="@style/Theme.WhiteUnify"/>

        <activity android:name=".feature_detail_pages.penjualan.SaldoSalesDetailActivity"
            android:screenOrientation="portrait"
            android:label="@string/saldo_sales_detail_title"
            android:theme="@style/Theme.WhiteUnify"/>

        <activity android:name=".feature_detail_pages.invoice.InvoiceDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify"/>
    </application>
</manifest>