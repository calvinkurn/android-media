<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.saldodetails">

    <application>
        <activity
            android:name=".saldoDetail.SaldoDepositActivity"
            android:label="@string/saldo_detail_title_activity_people_deposit"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_global"
                    android:path="@string/path_saldo_deposit"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

