query DepositActivityQuery($page: Int!, $maxRows: Int!, $dateFrom: String!, $dateTo: String!) {
    allDepositHistory: depositActivity(page: $page, maxRows: $maxRows, dateFrom: $dateFrom, dateTo: $dateTo) {
        message
        have_error
        have_next_page
        deposit_history_list {
              note
              amount
              class
              image
              create_time
        }
    }

    buyerDepositHistory: depositActivity(page: $page, maxRows: $maxRows, dateFrom: $dateFrom, dateTo: $dateTo, isSeller: false) {
        message
        have_error
        have_next_page
        deposit_history_list {
              note
              amount
              class
              image
              create_time
        }
    }

    sellerDepositHistory: depositActivity(page: $page, maxRows: $maxRows, dateFrom: $dateFrom, dateTo: $dateTo, isSeller: true) {
        message
        have_error
        have_next_page
        deposit_history_list {
              note
              amount
              class
              image
              create_time
        }
    }
}