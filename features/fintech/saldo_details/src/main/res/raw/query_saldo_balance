query SaldoQuery {

 usableBuyerSaldo: saldo(type: "usable", isSeller: false) {
   deposit
   deposit_fmt
 }

 usableSellerSaldo: saldo(type: "usable", isSeller: true) {
    deposit
    deposit_fmt
  }

  holdSellerSaldo: saldo(type: "hold", isSeller: true) {
      deposit
      deposit_fmt
    }

  holdBuyerSaldo: saldo(type: "hold", isSeller: false) {
      deposit
      deposit_fmt
    }
}