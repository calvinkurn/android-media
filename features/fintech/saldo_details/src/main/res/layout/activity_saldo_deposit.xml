<?xml version="1.0" encoding="utf-8"?><!-- WHERE il == Instant Loan-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/il_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="top"
        app:navigationIcon="@drawable/ic_icon_back_black"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:text="@string/title_saldo_detail"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/toolbar_saldo_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:padding="@dimen/dp_4"
                android:text="@string/saldo_help"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12"
                tools:text="Pelajari" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.design.widget.TabLayout
            android:id="@+id/saldo_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/tkpd_green_header"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/tkpd_green_header"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="@color/black_38" />

        <View
            android:id="@+id/saldo_tab_view_separator"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/top_bar_shadow"
            android:elevation="@dimen/dp_4" />

        <android.support.v4.view.ViewPager
            android:id="@+id/saldo_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>
