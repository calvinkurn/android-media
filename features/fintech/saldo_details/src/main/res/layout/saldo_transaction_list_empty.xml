<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/ic_saldo_empty_list" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_empty_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_3"
        android:gravity="center"
        android:text="@string/saldo_empty_list_heading"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_empty_content_text"
        style="@style/TextView.Small.BlackSecondary"
        android:layout_margin="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_100"
        android:gravity="center"
        android:maxLines="4"
        android:text="@string/saldo_empty_list_desc"
        android:textColor="@color/Unify_N700_32"
        app:typographyType="body_2" />


</LinearLayout>
