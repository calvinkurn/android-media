<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <com.tkpd.remoteresourcerequest.view.DeferredImageView
        android:id="@+id/no_result_image"
        android:layout_width="@dimen/saldo_empty_image_210"
        android:layout_height="@dimen/saldo_empty_image_210"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        app:imageDpiSupportType="singleDpi"
        app:completeUrl="https://images.tokopedia.net/img/android/res/singleDpi/saldo_img_empty_list.png" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_empty_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sd_dp_3"
        android:gravity="center"
        android:text="@string/saldo_empty_list_heading"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_empty_content_text"
        style="@style/TextView.Small.BlackSecondary"
        android:layout_margin="@dimen/sd_dp_3"
        android:layout_marginBottom="@dimen/dp_100"
        android:gravity="center"
        android:maxLines="4"
        android:text="@string/saldo_empty_list_desc"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_2" />


</LinearLayout>
