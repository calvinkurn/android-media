<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/ic_saldo_empty_list" />

    <TextView
        android:id="@+id/text_view_empty_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_3"
        android:gravity="center"
        android:text="@string/saldo_empty_list_heading"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_empty_content_text"
        style="@style/TextView.Small.BlackSecondary"
        android:layout_margin="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_100"
        android:gravity="center"
        android:maxLines="4"
        android:text="@string/saldo_empty_list_desc"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_14" />


</LinearLayout>
