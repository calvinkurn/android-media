<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:orientation="horizontal"
    android:paddingTop="@dimen/unify_space_8">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/transaction_image_view"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        app:unify_image_corner_radius="0" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/transaction_image_view"
        android:layout_toRightOf="@+id/transaction_image_view"
        android:padding="@dimen/dp_10">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/transaction_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_2"
            tools:text="Transaction Heading" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/saldo_transaction_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transaction_heading"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/Unify_N700_32"
            app:typographyType="body_3"
            tools:text="13 Apr 2021"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saldo_transaction_date"
            android:layout_marginTop="@dimen/dp_10"
            app:typographyType="body_2"
            tools:text="- Rp5.000"/>

        <!--@Todo background? -->
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nominal"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@android:drawable/list_selector_background"
            android:textColor="@color/Unify_N700_32"
            app:typographyType="body_2" />

    </RelativeLayout>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_2"
        android:layout_below="@+id/header" />
</RelativeLayout>