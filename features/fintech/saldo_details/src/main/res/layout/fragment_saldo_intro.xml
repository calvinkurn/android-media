<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Unify_Background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/unify_space_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd_dp_20"
                android:gravity="start"
                android:text="@string/saldo_intro_title_refund"
                android:textColor="@color/Unify_NN950_68"
                app:typographyWeight="bold"
                app:typographyType="heading_3"
                />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/description_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd_dp_10"
                android:gravity="start"
                app:typographyType="body_2"
                android:textColor="@color/Unify_NN950_68"
                android:text="@string/saldo_intro_description_refund" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_16"
                android:text="@string/sumber_dana_refund"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:textColor="@color/Unify_NN950_68" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/dana_refund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_12"
                android:drawablePadding="@dimen/unify_space_8"
                android:gravity="center_vertical"
                android:text="@string/dana_refund"
                app:typographyType="body_2"
                android:textColor="@color/Unify_NN950_68"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/disbursement_fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd_dp_10"
                android:drawablePadding="@dimen/unify_space_8"
                android:gravity="start"
                android:text="@string/disbursement_fund"
                app:typographyType="body_2"
                android:textColor="@color/Unify_NN950_68"/>

            <com.tokopedia.unifycomponents.DividerUnify
                android:layout_width="match_parent"
                android:layout_height="@dimen/sd_dp_1"
                android:layout_marginTop="@dimen/unify_space_24" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd_dp_20"
                android:gravity="start"
                android:text="@string/saldo_intro_title_seller"
                android:textColor="@color/Unify_NN950_68"
                app:typographyWeight="bold"
                app:typographyType="heading_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd_dp_10"
                android:gravity="start"
                android:text="@string/saldo_intro_description_seller"
                app:typographyType="body_2"
                android:textColor="@color/Unify_NN950_68"/>

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_16"
                android:text="@string/sumber_dana_seller"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:textColor="@color/Unify_NN950_68"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/hasil_penjualan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_12"
                android:drawablePadding="@dimen/unify_space_8"
                android:gravity="center_vertical"
                android:text="@string/hasil_penjualan"
                app:typographyType="body_2"
                android:textColor="@color/Unify_NN950_68"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/disbursement_priority_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd_dp_14"
                android:drawablePadding="@dimen/unify_space_8"
                android:gravity="start"
                android:text="@string/disbursement_priority_balance"
                app:typographyType="body_2"
                android:textColor="@color/Unify_NN950_68"/>


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/si_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_24"
                app:typographyType="body_2"
                android:textColor="@color/Unify_NN950_44" />
        </LinearLayout>
    </ScrollView>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/si_goto_balance_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginBottom="@dimen/unify_space_16"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_16"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled"
        android:text="@string/saldo_intro_goto_balance_page" />

</LinearLayout>
