<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/unify_space_12">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderView_One"
        android:layout_width="0dp"
        android:layout_height="@dimen/unify_space_12"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderView_two"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/unify_space_128"
        android:layout_height="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginStart="@dimen/unify_space_16"
        app:layout_constraintEnd_toEndOf="@id/loaderView_One"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderView_One"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderView_three"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/unify_space_12"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/unify_space_64"
        android:layout_height="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginStart="@dimen/unify_space_16"
        app:layout_constraintEnd_toEndOf="@id/loaderView_One"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderView_two"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>