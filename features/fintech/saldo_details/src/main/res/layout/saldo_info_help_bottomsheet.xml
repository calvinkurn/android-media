<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_8"
        android:text="@string/salso_info_bottomsheet_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:elevation="@dimen/unify_space_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/arrow1"
                android:padding="@dimen/unify_space_16"
                android:text="@string/saldo_saya_tidak_dapat_digunakan"
                app:typographyType="body_2" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/arrow1"
                android:layout_width="@dimen/unify_space_24"
                android:layout_height="@dimen/unify_space_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/unify_space_8"
                app:icon_color_light_disabled="@color/Unify_N700"
                app:icon_color_light_enable="@color/Unify_N700"
                app:icon_color_night_disabled="@color/Unify_N700"
                app:icon_color_night_enable="@color/Unify_N700"
                app:icon_name="CHEVRON_RIGHT" />
        </RelativeLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/unify_space_16"
        android:elevation="@dimen/unify_space_0"
        app:cardCornerRadius="@dimen/unify_space_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/arrow2"
                android:padding="@dimen/unify_space_16"
                android:text="@string/saldo_mengapa_saldo_saya_direview"
                app:typographyType="body_2" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/arrow2"
                android:layout_width="@dimen/unify_space_24"
                android:layout_height="@dimen/unify_space_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/unify_space_8"
                app:icon_color_light_disabled="@color/Unify_N700"
                app:icon_color_light_enable="@color/Unify_N700"
                app:icon_color_night_disabled="@color/Unify_N700"
                app:icon_color_night_enable="@color/Unify_N700"
                app:icon_name="CHEVRON_RIGHT" />
        </RelativeLayout>
    </com.tokopedia.unifycomponents.CardUnify>

</androidx.constraintlayout.widget.ConstraintLayout>