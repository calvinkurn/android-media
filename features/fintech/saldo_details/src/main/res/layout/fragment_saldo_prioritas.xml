<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sp_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8">

        <TextView
            android:id="@+id/sp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Saldo Prioritas"
            android:textColor="@color/black_70"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sp_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/sp_title"
            android:fontFamily="sans-serif"
            android:text="Baru"
            android:textColor="@color/black_70"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sp_not_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp_title"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="3sp"
            android:text="Tak perlu menunggu konfirmasi penerimaan barang dari pembeli, Anda dapat menarik sebagian dana penjualan hingga Rp10 juta!"
            android:textColor="#8a000000"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/sp_kyc_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp_title"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:padding="@dimen/dp_9">

            <ImageView
                android:id="@+id/sp_status_info_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--android:src="@drawable/info_icon"-->
            <TextView
                android:id="@+id/sp_kyc_status_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="3sp"
                android:text="Status: Menunggu Verifikasi Aplikasi"
                android:textColor="@color/black_70"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/sp_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp_kyc_status"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:longClickable="false"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:scrollbars="vertical" />

        <View
            android:id="@+id/sp_list_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/sp_detail_list"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/greyish_bg" />

        <LinearLayout
            android:id="@+id/sp_action_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp_list_separator"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:longClickable="false"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:scrollbars="vertical" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
