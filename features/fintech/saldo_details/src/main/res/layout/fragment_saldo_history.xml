<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_2">


    <TextView
        android:id="@+id/deposit_summary_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:paddingStart="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_18"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:text="@string/sp_transaction_history_heading"
        android:textColor="@color/black_56"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/dp_18"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/start_date_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/start_date_heading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/sp_start_date"
                android:textColor="@color/font_black_disabled_38"
                android:textSize="@dimen/sp_10"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_date_heading_tv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:drawableStart="@drawable/ic_calendar_grey"
                    android:drawableLeft="@drawable/ic_calendar_grey"
                    android:drawablePadding="@dimen/dp_15"
                    android:fontFamily="sans-serif"
                    android:foregroundGravity="center_vertical"
                    android:gravity="end|center_vertical"
                    android:lineSpacingExtra="@dimen/sp_10"
                    android:textColor="@color/green_nob"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/black_24" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@color/black_56" />

        <RelativeLayout
            android:id="@+id/end_date_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/end_date_heading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:text="@string/sp_end_date"
                android:textColor="@color/font_black_disabled_38"
                android:textSize="@dimen/sp_10"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end_date_heading_tv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/end_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7"
                    android:drawableStart="@drawable/ic_calendar_grey"
                    android:drawableLeft="@drawable/ic_calendar_grey"
                    android:drawablePadding="@dimen/dp_15"
                    android:fontFamily="sans-serif"
                    android:foregroundGravity="center_vertical"
                    android:gravity="end|center_vertical"
                    android:lineSpacingExtra="@dimen/sp_10"
                    android:textColor="@color/green_nob"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/black_24" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.design.widget.TabLayout
            android:id="@+id/transaction_history_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/tkpd_green_header"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/tkpd_green_header"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="@color/black_38" />

        <View
            android:id="@+id/transaction_history_tab_view_separator"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/top_bar_shadow"
            android:elevation="@dimen/dp_4" />

        <com.tokopedia.saldodetails.view.ui.HeightWrappingViewPager
            android:id="@+id/transaction_history_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


</LinearLayout>