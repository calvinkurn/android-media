<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcl_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:card_type="shadow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/merchant_detail_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/saldo_merchant_credit_background" />

        <ImageView
            android:id="@+id/mcl_logo"
            android:layout_width="@dimen/unify_space_24"
            android:layout_height="@dimen/unify_space_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            app:srcCompat="@drawable/ic_refund_disbursement"
            android:contentDescription="@string/merchant_credit_mcl_logo_text" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/mcl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            app:layout_constraintStart_toEndOf="@id/mcl_logo"
            app:layout_constraintTop_toTopOf="@id/mcl_logo"
            app:layout_constraintBottom_toBottomOf="@id/mcl_logo"
            android:text="@string/modal_toko"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_5"
            tools:text="Modal Toko" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/mcl_blocked_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_8"
            app:layout_constraintTop_toTopOf="@id/mcl_title"
            app:layout_constraintBottom_toBottomOf="@id/mcl_title"
            app:layout_constraintStart_toEndOf="@+id/mcl_title"
            android:paddingStart="@dimen/unify_space_8"
            android:paddingLeft="@dimen/unify_space_8"
            android:paddingTop="@dimen/sd_dp_3"
            android:paddingEnd="@dimen/unify_space_8"
            android:paddingRight="@dimen/unify_space_8"
            android:paddingBottom="@dimen/sd_dp_3"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            app:labelTitle="Terblokir"
            app:labelType="general_light_grey"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/mcl_action_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/mcl_title"
            app:layout_constraintBottom_toBottomOf="@id/mcl_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/unify_space_12"
            app:layout_constraintStart_toEndOf="@+id/mcl_blocked_status"
            android:gravity="end"
            android:textColor="@color/Unify_G500"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Pelajari" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/mcl_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mcl_logo"
            app:layout_constraintStart_toStartOf="@id/mcl_logo"
            app:layout_constraintEnd_toEndOf="@+id/mcl_action_item"
            android:layout_marginTop="@dimen/sd_dp_10"
            android:lineSpacingExtra="@dimen/sp_4"
            android:textColor="@color/Unify_N700_44"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:typographyType="body_2"
            tools:text="description"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/mcl_info_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            app:layout_constraintTop_toBottomOf="@+id/mcl_description"
            app:layout_constraintStart_toStartOf="@id/mcl_logo"
            app:layout_constraintEnd_toEndOf="@id/mcl_action_item"
            android:layout_marginTop="@dimen/sd_dp_6"
            android:divider="@android:color/transparent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:visibility="gone"
            tools:visibility="gone" />

        <RelativeLayout
            android:id="@+id/mcl_box_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mcl_info_list"
            app:layout_constraintStart_toStartOf="@id/mcl_logo"
            app:layout_constraintEnd_toEndOf="@id/mcl_action_item"
            android:layout_marginTop="@dimen/unify_space_8"
            android:background="@drawable/bg_saldo_round_corner_solid_grey"
            android:padding="@dimen/unify_space_8"
            android:visibility="visible"
            tools:visibility="gone">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/mcl_box_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_4"
                android:lineSpacingExtra="@dimen/sp_4"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3"
                tools:text="Status: Menunggu Verifikasi Aplikasi" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/mcl_box_Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mcl_box_title"
                android:layout_marginStart="@dimen/unify_space_4"
                android:layout_marginTop="@dimen/unify_space_4"
                android:lineSpacingExtra="@dimen/sp_4"
                android:textColor="@color/Unify_N700_44"
                app:typographyType="small"
                tools:text="Status: Menunggu Verifikasi Aplikasi" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/unify_space_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mcl_box_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>
