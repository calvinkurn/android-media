<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sp_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4">

    <ViewFlipper
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:measureAllChildren="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:padding="@dimen/dp_8">

            <ImageView
                android:id="@+id/mcl_logo"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_refund_disbursement" />

            <TextView
                android:id="@+id/mcl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toEndOf="@+id/mcl_logo"
                android:layout_toRightOf="@+id/mcl_logo"
                android:text="@string/modal_toko"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                tools:text="Modal Toko" />

            <TextView
                android:id="@+id/mcl_action_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toEndOf="@+id/mcl_title"
                android:layout_toRightOf="@+id/mcl_title"
                android:gravity="end"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                tools:text="Pelajari" />

            <TextView
                android:id="@+id/mcl_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mcl_title"
                android:layout_marginTop="@dimen/dp_12"
                android:lineSpacingExtra="@dimen/sp_4"
                android:textColor="@color/black_54"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                tools:text="ncsdn njvksnv svksvkjv "
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/mcl_info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@+id/mcl_description"
                android:layout_marginTop="@dimen/dp_6"
                android:divider="@android:color/transparent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:visibility="gone"
                tools:visibility="visible" />

            <RelativeLayout
                android:id="@+id/mcl_box_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mcl_info_list"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/bg_round_corner_solid_grey"
                android:padding="@dimen/dp_8"
                android:visibility="visible">

                <TextView
                    android:id="@+id/mcl_box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingExtra="@dimen/sp_4"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_12"
                    tools:text="Status: Menunggu Verifikasi Aplikasi" />

                <TextView
                    android:id="@+id/mcl_box_Desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mcl_box_title"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_4"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="@dimen/sp_4"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="normal"
                    tools:text="Status: Menunggu Verifikasi Aplikasi" />
            </RelativeLayout>
        </RelativeLayout>
    </ViewFlipper>

</android.support.v7.widget.CardView>
