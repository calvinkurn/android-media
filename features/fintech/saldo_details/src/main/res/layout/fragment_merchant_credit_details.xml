<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcl_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:card_type="shadow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignTop="@+id/mcl_parent_rl"
            android:layout_alignBottom="@+id/mcl_parent_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/saldo_merchant_credit_background" />

        <RelativeLayout
            android:id="@+id/mcl_parent_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_2"
            android:padding="@dimen/unify_space_8">

            <ImageView
                android:id="@+id/mcl_logo"
                android:layout_width="@dimen/unify_space_24"
                android:layout_height="@dimen/unify_space_24"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/merchant_credit_mcl_logo_text"
                app:srcCompat="@drawable/ic_refund_disbursement" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/mcl_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_8"
                android:layout_marginTop="@dimen/unify_space_2"
                android:layout_toEndOf="@+id/mcl_logo"
                android:text="@string/modal_toko"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="heading_5"
                tools:text="Modal Toko" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/mcl_blocked_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_8"
                android:layout_marginTop="@dimen/unify_space_2"
                android:layout_toEndOf="@+id/mcl_title"
                android:paddingStart="@dimen/unify_space_8"
                android:paddingLeft="@dimen/unify_space_8"
                android:paddingTop="@dimen/sd_dp_3"
                android:paddingEnd="@dimen/unify_space_8"
                android:paddingRight="@dimen/unify_space_8"
                android:paddingBottom="@dimen/sd_dp_3"
                android:textSize="@dimen/sp_10"
                android:visibility="gone"
                app:labelTitle="Terblokir"
                app:labelType="general_light_grey"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/mcl_action_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/unify_space_4"
                android:layout_toEndOf="@+id/mcl_blocked_status"
                android:gravity="end"
                android:textColor="@color/Unify_G500"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Pelajari" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/mcl_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mcl_title"
                android:layout_marginTop="@dimen/unify_space_12"
                android:lineSpacingExtra="@dimen/sp_4"
                android:textColor="@color/Unify_N700_68"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                app:typographyType="body_2"
                tools:text="description"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/mcl_info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@+id/mcl_description"
                android:layout_marginTop="@dimen/sd_dp_6"
                android:divider="@android:color/transparent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:visibility="gone"
                tools:visibility="visible" />

            <RelativeLayout
                android:id="@+id/mcl_box_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mcl_info_list"
                android:layout_marginTop="@dimen/unify_space_8"
                android:layout_marginBottom="@dimen/unify_space_4"
                android:background="@drawable/bg_saldo_round_corner_solid_grey"
                android:padding="@dimen/unify_space_8"
                android:visibility="visible">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/mcl_box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/unify_space_4"
                    android:lineSpacingExtra="@dimen/sp_4"
                    android:textColor="@color/Unify_N700_68"
                    app:typographyType="body_3"
                    tools:text="Status: Menunggu Verifikasi Aplikasi" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/mcl_box_Desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mcl_box_title"
                    android:layout_marginStart="@dimen/unify_space_4"
                    android:layout_marginTop="@dimen/unify_space_4"
                    android:lineSpacingExtra="@dimen/sp_4"
                    android:textColor="@color/Unify_N700_44"
                    app:typographyType="small"
                    tools:text="Status: Menunggu Verifikasi Aplikasi" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unify_space_4"
                android:layout_below="@+id/mcl_box_layout" />
        </RelativeLayout>
    </RelativeLayout>

</com.tokopedia.unifycomponents.CardUnify>
