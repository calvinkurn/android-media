                <RelativeLayout
                    android:id="@+id/end_date_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/end_date_heading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="6sp"
                        android:text="Tanggal Akhir"
                        android:textColor="@color/font_black_disabled_38"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/end_date_heading_tv"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/end_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:drawableStart="@drawable/ic_calendar_grey"
                            android:drawableLeft="@drawable/ic_calendar_grey"
                            android:drawablePadding="@dimen/dp_15"
                            android:fontFamily="sans-serif"
                            android:foregroundGravity="center_vertical"
                            android:gravity="end|center_vertical"
                            android:lineSpacingExtra="@dimen/sp_10"
                            android:text="01 Jan 2018"
                            android:textColor="@color/green_nob"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/black_24" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

