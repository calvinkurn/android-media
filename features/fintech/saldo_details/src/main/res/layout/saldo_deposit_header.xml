<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deposit_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <android.support.v7.widget.CardView
        android:id="@+id/withdraw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16">

                <TextView
                    android:id="@+id/txt_depo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="start"
                    android:text="@string/sp_title_remaining_tokopedia"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/total_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_depo"
                    android:gravity="start"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:maxLines="1"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/withdraw_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_round_corner_solid_green"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/sp_5"
                    android:padding="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/sp_title_withdraw"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hold_balance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:background="@color/grey_background"
                android:padding="@dimen/dp_10"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/check_status_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sp_check_status" />

                <TextView
                    android:id="@+id/amount_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toEndOf="@+id/check_status_icon"
                    android:layout_toRightOf="@+id/check_status_icon"
                    android:text="@string/saldo_hold_balance_text" />

                <TextView
                    android:id="@+id/check_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount_review"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toEndOf="@+id/check_status_icon"
                    android:layout_toRightOf="@+id/check_status_icon"
                    android:text="@string/check_saldo_hold_balance_status"
                    android:textColor="@color/medium_green" />


            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


