<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deposit_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/saldo_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/saldo_card_bg_green_gradient"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <LinearLayout
            android:id="@+id/ticker_message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@drawable/sp_bg_rounded_corners_light_green"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <View
                android:id="@+id/status_ticker_side_view"
                android:layout_width="@dimen/dp_3"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@drawable/sp_line_green" />

            <TextView
                android:id="@+id/ticker_message_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:lineSpacingExtra="@dimen/sp_4"
                android:paddingStart="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_11" />

            <ImageView
                android:id="@+id/close_ticker_message"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_26"
                android:layout_margin="@dimen/dp_4"
                android:layout_weight="0.2"
                android:padding="@dimen/dp_6"
                android:src="@drawable/ic_cancel_green" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/withdraw_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_4"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="@dimen/dp_4"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/main_balance_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8">

                    <ImageView
                        android:id="@+id/saldo_icon"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/ic_saldo_green_filled"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/saldo_deposit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_6"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_toEndOf="@+id/saldo_icon"
                        android:layout_toRightOf="@+id/saldo_icon"
                        android:text="@string/sp_title_remaining_tokopedia"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:id="@+id/saldo_deposit_text_info"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignTop="@+id/saldo_deposit_text"
                        android:layout_alignBottom="@+id/saldo_deposit_text"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/saldo_deposit_text"
                        android:layout_toRightOf="@+id/saldo_deposit_text"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/info_icon"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/total_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/saldo_deposit_layout_expand"
                        android:layout_toLeftOf="@+id/saldo_deposit_layout_expand"
                        android:layout_toEndOf="@+id/saldo_deposit_text_info"
                        android:layout_toRightOf="@+id/saldo_deposit_text_info"
                        android:gravity="end"
                        android:textColor="@color/black_70"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        tools:text="Rp 1.000.000" />

                    <ImageView
                        android:id="@+id/saldo_deposit_layout_expand"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignTop="@+id/saldo_deposit_text"
                        android:layout_alignBottom="@+id/saldo_deposit_text"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/ic_arrow_up_grey"
                        android:visibility="visible"
                        tools:visibility="visible" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/saldo_type_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_4">

                    <View
                        android:id="@+id/saldo_balance_separator"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@color/grey_300" />

                    <RelativeLayout
                        android:id="@+id/saldo_buyer_balance_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8">


                        <TextView
                            android:id="@+id/saldo_buyer_deposit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_2"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/saldo_buyer_title"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:id="@+id/saldo_buyer_deposit_text_info"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_alignTop="@+id/saldo_buyer_deposit_text"
                            android:layout_alignBottom="@+id/saldo_buyer_deposit_text"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/saldo_buyer_deposit_text"
                            android:layout_toRightOf="@+id/saldo_buyer_deposit_text"
                            android:padding="@dimen/dp_3"
                            android:src="@drawable/info_icon"
                            android:visibility="visible"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/buyer_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:textColor="@color/black_70"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="normal"
                            tools:text="Rp 1.000.000" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/saldo_seller_balance_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:padding="@dimen/dp_8">

                        <TextView
                            android:id="@+id/saldo_seller_deposit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_2"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:text="@string/saldo_seller_title"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:id="@+id/saldo_seller_deposit_text_info"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_alignTop="@+id/saldo_seller_deposit_text"
                            android:layout_alignBottom="@+id/saldo_seller_deposit_text"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/saldo_seller_deposit_text"
                            android:layout_toRightOf="@+id/saldo_seller_deposit_text"
                            android:padding="@dimen/dp_3"
                            android:src="@drawable/info_icon"
                            android:visibility="visible"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/seller_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textColor="@color/black_70"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="normal"
                            tools:text="Rp 1.000.000" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/hold_balance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/bg_corner_yellow_filled"
            android:padding="@dimen/dp_8"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/amount_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/saldo_hold_balance_text"
                android:textColor="@color/font_black_secondary_54" />

            <TextView
                android:id="@+id/check_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toEndOf="@+id/amount_review"
                android:layout_toRightOf="@+id/amount_review"
                android:text="@string/check_saldo_hold_balance_status"
                android:textColor="@color/medium_green" />


        </RelativeLayout>

        <TextView
            android:id="@+id/withdraw_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/sp_withdraw_button_selector"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="@string/sp_title_withdraw"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/merchant_status_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saldo_balance_layout"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/financial_services"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                tools:text="Layanan Finansial" />

            <ImageView
                android:id="@+id/merchant_detail_layout_expand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="@dimen/dp_3"
                android:src="@drawable/ic_arrow_up_grey"
                android:visibility="visible"
                tools:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/merchant_details_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/merchant_credit_line_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/saldo_prioritas_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>