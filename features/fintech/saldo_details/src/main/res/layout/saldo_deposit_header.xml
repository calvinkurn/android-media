<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deposit_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/saldo_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/saldo_card_bg_green_gradient"
        android:orientation="vertical"
        android:paddingStart="@dimen/unify_space_16"
        android:paddingTop="@dimen/unify_space_16"
        android:paddingEnd="@dimen/unify_space_16"
        android:paddingBottom="@dimen/unify_space_12">

        <FrameLayout
            android:id="@+id/withdraw_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.CardUnify
                android:id="@+id/cardWithdrawBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sd_dp_3"
                android:layout_marginBottom="@dimen/unify_space_4"
                app:card_type="shadow">

                <LinearLayout
                    android:id="@+id/llWithdrawBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/main_balance_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/unify_space_8">

                        <com.tokopedia.iconunify.IconUnify
                            android:id="@+id/saldo_icon"
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_28"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/sp_saldo_title"
                            android:padding="@dimen/unify_space_2"
                            app:icon_color_light_enable="@color/Unify_GN500"
                            app:icon_color_night_enable="@color/Unify_GN500"
                            app:icon_name="SALDO" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/saldo_deposit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/sd_dp_6"
                            android:layout_toEndOf="@+id/saldo_icon"
                            android:text="@string/sp_title_remaining_tokopedia"
                            android:textColor="@color/Unify_NN950_68"
                            app:typographyType="body_3" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/total_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/saldo_deposit_layout_expand"
                            android:layout_toEndOf="@+id/saldo_deposit_text"
                            android:gravity="end"
                            android:textColor="@color/Unify_NN950_68"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            app:typographyType="body_1"
                            app:typographyWeight="bold"
                            tools:text="Rp 1.000.000" />

                        <com.tokopedia.iconunify.IconUnify
                            android:id="@+id/saldo_deposit_layout_expand"
                            android:layout_width="@dimen/unify_space_24"
                            android:layout_height="@dimen/unify_space_24"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            app:icon_color_light_enable="@color/Unify_NN600"
                            app:icon_color_night_enable="@color/Unify_NN600"
                            app:icon_name="CHEVRON_UP" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/saldo_type_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/unify_space_8"
                        android:orientation="vertical">

                        <com.tokopedia.unifycomponents.DividerUnify
                            android:id="@+id/saldo_balance_separator"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sd_dp_1"
                            android:layout_marginBottom="@dimen/unify_space_12" />

                        <RelativeLayout
                            android:id="@+id/saldo_buyer_balance_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/unify_space_8"
                            android:paddingRight="@dimen/unify_space_8">

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/saldo_buyer_deposit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/unify_space_4"
                                android:layout_marginTop="@dimen/sd_dp_10"
                                android:text="@string/saldo_total_balance_buyer"
                                android:textColor="@color/Unify_NN950_68"
                                app:typographyType="body_3" />

                            <com.tokopedia.iconunify.IconUnify
                                android:id="@+id/saldo_buyer_deposit_text_info"
                                android:layout_width="@dimen/unify_space_24"
                                android:layout_height="@dimen/unify_space_24"
                                android:layout_alignWithParentIfMissing="true"
                                android:layout_alignTop="@+id/saldo_buyer_deposit_text"
                                android:layout_alignBottom="@+id/saldo_buyer_deposit_text"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/saldo_buyer_deposit_text"
                                android:padding="@dimen/unify_space_2"
                                app:icon_color_light_enable="@color/Unify_NN600"
                                app:icon_color_night_enable="@color/Unify_NN600"
                                app:icon_name="INFORMATION" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/buyer_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/unify_space_4"
                                android:maxLines="1"
                                android:textColor="@color/Unify_NN950_68"
                                app:typographyType="body_3"
                                tools:text="Rp 1.000.000" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/saldo_seller_balance_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/unify_space_8"
                            android:paddingEnd="@dimen/unify_space_8">

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/saldo_seller_deposit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/unify_space_4"
                                android:text="@string/saldo_total_balance_seller"
                                android:textColor="@color/Unify_NN950_68"
                                app:typographyType="body_3" />

                            <com.tokopedia.iconunify.IconUnify
                                android:id="@+id/saldo_seller_deposit_text_info"
                                android:layout_width="@dimen/unify_space_24"
                                android:layout_height="@dimen/unify_space_24"
                                android:layout_alignWithParentIfMissing="true"
                                android:layout_alignTop="@+id/saldo_seller_deposit_text"
                                android:layout_alignBottom="@+id/saldo_seller_deposit_text"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/saldo_seller_deposit_text"
                                android:padding="@dimen/unify_space_2"
                                app:icon_color_light_enable="@color/Unify_NN600"
                                app:icon_color_night_enable="@color/Unify_NN600"
                                app:icon_name="INFORMATION" />

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/seller_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/unify_space_4"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textColor="@color/Unify_NN950_68"
                                app:typographyType="body_3"
                                tools:text="Rp 1.000.000" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hold_balance_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/unify_space_8"
                        android:paddingStart="@dimen/unify_space_8"
                        android:paddingEnd="@dimen/unify_space_8">

                        <com.tokopedia.unifycomponents.ticker.Ticker
                            android:id="@+id/hold_balance_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:closeButtonVisibility="gone"
                            app:tickerShapeType="loose"
                            app:tickerType="warning"
                            tools:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

            </com.tokopedia.unifycomponents.CardUnify>

            <com.tokopedia.unifycomponents.LocalLoad
                android:id="@+id/localLoadSaldoBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </FrameLayout>


        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/withdraw_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_4"
            android:layout_marginTop="@dimen/unify_space_2"
            android:layout_marginEnd="@dimen/unify_space_4"
            android:gravity="center"
            android:padding="@dimen/unify_space_12"
            android:text="@string/sp_title_withdraw"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/merchant_status_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saldo_balance_layout"
        android:background="@color/Unify_NN0"
        android:orientation="vertical"
        android:padding="@dimen/unify_space_16"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/merchant_detail_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_4"
            android:layout_marginEnd="@dimen/unify_space_4"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/unify_space_8"
            android:weightSum="1">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/merchant_detail_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/financial_services"
                android:textColor="@color/Unify_NN950_96"
                app:typographyType="heading_4"
                app:typographyWeight="bold" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/merchant_detail_layout_expand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:visibility="visible"
                app:icon_color_light_enable="@color/Unify_NN600"
                app:icon_color_night_enable="@color/Unify_NN600"
                app:icon_name="CHEVRON_UP"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/merchant_details_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sd_dp_6"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/saldo_prioritas_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_8"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
