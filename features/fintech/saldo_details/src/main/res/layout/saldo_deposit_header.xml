<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deposit_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:id="@+id/ticker_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/sp_bg_rounded_corners_light_green"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/status_ticker_side_view"
            android:layout_width="@dimen/dp_3"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@drawable/sp_line_green" />

        <TextView
            android:id="@+id/ticker_message_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:lineSpacingExtra="@dimen/sp_4"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_11" />

        <ImageView
            android:id="@+id/close_ticker_message"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_26"
            android:layout_margin="@dimen/dp_4"
            android:layout_weight="0.2"
            android:padding="@dimen/dp_6"
            android:src="@drawable/ic_cancel_green" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/withdraw_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ticker_message_layout"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16">

                <TextView
                    android:id="@+id/saldo_deposit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="start"
                    android:text="@string/sp_title_remaining_tokopedia"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/saldo_deposit_text_info"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:padding="@dimen/dp_4"
                    android:layout_toRightOf="@+id/saldo_deposit_text"
                    android:layout_toEndOf="@+id/saldo_deposit_text"
                    android:layout_above="@+id/total_balance"
                    android:src="@drawable/info_icon"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/total_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saldo_deposit_text"
                    android:gravity="start"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:maxLines="1"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/withdraw_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/sp_withdraw_button_selector"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/sp_5"
                    android:padding="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="@string/sp_title_withdraw"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hold_balance_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@color/grey_background"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/check_status_icon"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="-6dp"
                    android:src="@drawable/sp_check_status_icon" />

                <TextView
                    android:id="@+id/amount_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toEndOf="@+id/check_status_icon"
                    android:layout_toRightOf="@+id/check_status_icon"
                    android:text="@string/saldo_hold_balance_text" />

                <TextView
                    android:id="@+id/check_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount_review"
                    android:layout_toEndOf="@+id/check_status_icon"
                    android:layout_toRightOf="@+id/check_status_icon"
                    android:text="@string/check_saldo_hold_balance_status"
                    android:textColor="@color/medium_green" />


            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/saldo_prioritas_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/withdraw_layout"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_8" />


    <android.support.v7.widget.CardView
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saldo_prioritas_widget"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_6"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_4">

        <LinearLayout
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4sp"
                android:text="@string/sp_transaction_history_heading"
                android:textColor="@color/black_56"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/start_date_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/start_date_heading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/sp_start_date"
                        android:textColor="@color/font_black_disabled_38"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/start_date_heading_tv"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/start_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:drawableStart="@drawable/ic_calendar_grey"
                            android:drawableLeft="@drawable/ic_calendar_grey"
                            android:drawablePadding="@dimen/dp_15"
                            android:fontFamily="sans-serif"
                            android:foregroundGravity="center_vertical"
                            android:gravity="end|center_vertical"
                            android:lineSpacingExtra="@dimen/sp_10"
                            android:textColor="@color/green_nob"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/black_24" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="4dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_32"
                    android:layout_marginRight="@dimen/dp_32"
                    android:background="@color/black_56" />

                <RelativeLayout
                    android:id="@+id/end_date_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/end_date_heading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="6sp"
                        android:text="@string/sp_end_date"
                        android:textColor="@color/font_black_disabled_38"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/end_date_heading_tv"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/end_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:drawableStart="@drawable/ic_calendar_grey"
                            android:drawableLeft="@drawable/ic_calendar_grey"
                            android:drawablePadding="@dimen/dp_15"
                            android:fontFamily="sans-serif"
                            android:foregroundGravity="center_vertical"
                            android:gravity="end|center_vertical"
                            android:lineSpacingExtra="@dimen/sp_10"
                            android:textColor="@color/green_nob"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/black_24" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>