<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/mcl_bottom_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_8"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        tools:text="Menunggu Proses Verifikasi" />

    <TextView
        android:id="@+id/mcl_bottom_sheet_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="#ae31353b"
        android:textSize="@dimen/sp_14"
        tools:text="Pengajuan sedang kami proses. Lama proses verifikasi maksimum 1x24 jam sejak dokumen dikirim" />
</LinearLayout>