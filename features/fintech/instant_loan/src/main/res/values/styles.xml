<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Bold">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DefaultLabelText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/il_text_size_small</item>
        <item name="android:textColor">@color/black_38</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="LoanInfoLabelText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/il_text_size_label_info</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_11</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="DefaultTncLabelText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/il_text_size_xxsmall</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="DefaultValueText" parent="Normal">
        <item name="android:textSize">@dimen/il_text_size_small</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MediumValueText" parent="Bold">
        <item name="android:textSize">@dimen/il_text_size_regular</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="HeaderText" parent="Bold">
        <item name="android:textSize">@dimen/il_text_size_header</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/il_line_spacing_header</item>
    </style>

    <style name="SubmitButton" parent="Bold">
        <item name="android:textSize">@dimen/il_text_size_regular</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <declare-styleable name="WidgetAddRemove">
        <attr name="war_btnDisableTintColor" format="reference|color"/>
        <attr name="war_btnEnableTintColor" format="reference|color"/>
        <attr name="war_minQuantity" format="reference|integer"/>
        <attr name="war_maxQuantity" format="reference|integer"/>
    </declare-styleable>
</resources>