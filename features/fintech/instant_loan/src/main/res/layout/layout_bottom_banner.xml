<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_label_promo_banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/il_padding_medium"
        android:paddingLeft="@dimen/il_padding_medium"
        android:paddingEnd="@dimen/il_padding_medium"
        android:paddingRight="@dimen/il_padding_medium"
        android:text="@string/label_online_promo"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_view_pager_banner"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/text_label_promo_banner" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_next"
        android:layout_width="@dimen/width_fab_banner_offer"
        android:layout_height="@dimen/height_fab_banner_offer"
        android:layout_marginEnd="@dimen/il_margin_regular"
        android:layout_marginRight="@dimen/il_margin_regular"
        android:scaleType="center"
        android:tint="@color/il_gray"
        android:visibility="invisible"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/view_pager_banner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_pager_banner"
        app:srcCompat="@drawable/instant_loan_keyboard_arrow_right" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_previous"
        android:layout_width="@dimen/width_fab_banner_offer"
        android:layout_height="@dimen/height_fab_banner_offer"
        android:layout_marginStart="@dimen/il_margin_regular"
        android:layout_marginLeft="@dimen/il_margin_regular"
        android:scaleType="center"
        android:tint="@color/il_gray"
        android:visibility="invisible"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/view_pager_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_pager_banner"
        app:srcCompat="@drawable/instant_loan_keyboard_arrow_left" />

</android.support.constraint.ConstraintLayout>