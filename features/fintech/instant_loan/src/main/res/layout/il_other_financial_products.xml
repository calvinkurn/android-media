<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/text_label_testimonial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:text="@string/il_label_other_financial_products"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/financial_product_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_4"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/text_label_testimonial">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12">

            <ImageView
                android:id="@+id/financial_product_image_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/financial_product_image_one"
                android:padding="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/financial_product_heading_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/sp_6"
                android:text="@string/label_financial_product_heading_one"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/financial_product_image_one"
                app:layout_constraintLeft_toRightOf="@+id/financial_product_image_one"
                app:layout_constraintTop_toTopOf="@+id/financial_product_image_one"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/financial_product_description_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:lineSpacingExtra="@dimen/sp_6"
                android:text="@string/label_financial_product_desc_one"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/financial_product_image_one"
                app:layout_constraintStart_toStartOf="@+id/financial_product_heading_one"
                app:layout_constraintTop_toBottomOf="@+id/financial_product_heading_one" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/financial_product_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_4"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/financial_product_one">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12">

            <ImageView
                android:id="@+id/financial_product_image_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/financial_product_image_two"
                android:padding="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/financial_product_heading_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/sp_6"
                android:text="@string/label_financial_product_heading_two"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/financial_product_image_two"
                app:layout_constraintLeft_toRightOf="@+id/financial_product_image_two"
                app:layout_constraintTop_toTopOf="@+id/financial_product_image_two"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/financial_product_description_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:lineSpacingExtra="@dimen/sp_6"
                android:text="@string/label_financial_product_desc_two"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@+id/financial_product_image_two"
                app:layout_constraintStart_toStartOf="@+id/financial_product_heading_two"
                app:layout_constraintTop_toBottomOf="@+id/financial_product_heading_two"
                tools:text="danainstan top markotop deh" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>