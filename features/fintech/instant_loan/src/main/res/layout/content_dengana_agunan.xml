<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/il_margin_medium"
    android:layout_marginLeft="@dimen/il_margin_medium"
    android:layout_marginRight="@dimen/il_margin_medium"
    android:layout_marginTop="@dimen/il_margin_medium"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/il_margin_medium"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/text_form_header"
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_with_collateral" />

        <TextView
            android:id="@+id/text_form_description"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_regular"
            android:text="@string/description_instant_fund"
            android:textColor="@color/black_38"
            app:layout_constraintTop_toBottomOf="@+id/text_form_header" />

        <TextView
            android:id="@+id/text_label_amount"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_medium"
            android:text="@string/label_amount"
            app:layout_constraintTop_toBottomOf="@+id/text_form_description" />

        <TextView
            android:id="@+id/text_value_amount"
            style="@style/DefaultValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_xsmall"
            android:text="1 Juta - 500 Juta"
            app:layout_constraintLeft_toLeftOf="@+id/text_label_amount"
            app:layout_constraintTop_toBottomOf="@+id/text_label_amount" />

        <View
            android:id="@+id/line_separator_vertical_one"
            android:layout_width="0.5dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white_four"
            app:layout_constraintBottom_toTopOf="@+id/line_separator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/text_label_duration"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_medium"
            android:text="@string/label_duration"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_form_description" />

        <TextView
            android:id="@+id/text_value_duration"
            style="@style/DefaultValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_xsmall"
            android:text="7 - 18 Hari"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_label_duration" />

        <View
            android:id="@+id/line_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/white_four"
            app:layout_constraintTop_toBottomOf="@+id/text_value_duration" />

        <TextView
            android:id="@+id/text_label_processing_time"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_regular"
            android:text="@string/label_processing_time"
            app:layout_constraintTop_toBottomOf="@+id/line_separator" />

        <TextView
            android:id="@+id/text_value_processing_time"
            style="@style/DefaultValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_xsmall"
            android:text="2-5 Hari"
            app:layout_constraintLeft_toLeftOf="@+id/text_label_processing_time"
            app:layout_constraintTop_toBottomOf="@+id/text_label_processing_time" />

        <View
            android:id="@+id/line_separator_vertical_two"
            android:layout_width="0.5dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@color/white_four"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_separator" />

        <TextView
            android:id="@+id/text__interest_rate"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_regular"
            android:text="@string/label_interest_rate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_separator" />

        <TextView
            android:id="@+id/text_value_interest_rate"
            style="@style/DefaultValueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_xsmall"
            android:text="0,75 - 0,9%"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text__interest_rate" />


        <TextView
            android:id="@+id/text_label_nominal"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_medium"
            android:text="@string/label_nominal_pinjaman"
            app:layout_constraintTop_toBottomOf="@+id/text_value_processing_time" />

        <Spinner
            android:id="@+id/spinner_value_nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_small"
            android:background="@drawable/spinner_gradient"
            app:layout_constraintTop_toBottomOf="@+id/text_label_nominal" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/il_margin_xlarge"
            app:cardBackgroundColor="@color/orange_red"
            app:cardUseCompatPadding="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_value_nominal">

            <TextView
                android:id="@+id/button_search_pinjaman"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/label_search_loans"
                android:textColor="@color/white"
                android:textSize="@dimen/il_text_size_regular" />

            <ProgressBar
                android:id="@+id/progress_bar_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right|center_vertical|end"
                android:layout_marginEnd="@dimen/il_margin_medium"
                android:layout_marginRight="@dimen/il_margin_medium"
                android:visibility="invisible" />
        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>