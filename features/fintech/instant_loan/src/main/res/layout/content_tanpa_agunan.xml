<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16">

    <TextView
        android:id="@+id/text_form_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_loan_amount"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_info_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_form_description">


        <TextView
            android:id="@+id/text_label_amount"
            style="@style/LoanInfoLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_medium"
            android:text="@string/label_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_value_amount"
            style="@style/DefaultValueText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_xsmall"
            android:text="1 Juta - 500"
            app:layout_constraintLeft_toLeftOf="@+id/text_label_amount"
            app:layout_constraintRight_toLeftOf="@+id/line_separator_vertical_one"
            app:layout_constraintTop_toBottomOf="@+id/text_label_amount" />

        <View
            android:id="@+id/line_separator_vertical_one"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/il_margin_medium"
            android:background="@color/white_four"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_label_duration"
            style="@style/LoanInfoLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small_sm"
            android:layout_marginLeft="@dimen/margin_small_sm"
            android:layout_marginTop="@dimen/il_margin_medium"
            android:text="@string/label_duration"
            app:layout_constraintStart_toEndOf="@+id/line_separator_vertical_one"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_value_duration"
            style="@style/DefaultValueText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small_sm"
            android:layout_marginLeft="@dimen/margin_small_sm"
            android:layout_marginTop="@dimen/il_margin_xsmall"
            android:text="7 - 18 Hari"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/line_separator_vertical_one"
            app:layout_constraintTop_toBottomOf="@+id/text_label_duration" />
    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/text_loan_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Periode Pinjaman"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_info_one"
        tools:layout_editor_absoluteX="0dp" />


    <include
        android:id="@+id/spinner_label_nominal"
        layout="@layout/il_spinner_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/il_margin_small"
        app:layout_constraintEnd_toEndOf="@+id/text_loan_period"
        app:layout_constraintStart_toStartOf="@+id/text_loan_period"
        app:layout_constraintTop_toBottomOf="@+id/text_loan_period" />
    <!--<Spinner
        android:id="@+id/spinner_label_nominal"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/il_margin_small"
        app:layout_constraintStart_toStartOf="@+id/text_loan_period"
        app:layout_constraintTop_toBottomOf="@+id/text_loan_period" />-->


    <include
        android:id="@+id/spinner_value_nominal"
        layout="@layout/il_spinner_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/il_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_label_nominal"
        app:layout_constraintTop_toBottomOf="@+id/text_loan_period" />

    <!--<Spinner
        android:id="@+id/spinner_value_nominal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/il_margin_small"
        android:background="@drawable/instant_loan_spinner_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_label_nominal"
        app:layout_constraintTop_toBottomOf="@+id/text_loan_period" />-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/il_margin_xlarge"
        app:cardBackgroundColor="@color/orange_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_value_nominal">

        <TextView
            android:id="@+id/button_search_pinjaman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/label_search_loans"
            android:textColor="@color/white"
            android:textSize="@dimen/il_text_size_regular" />

        <ProgressBar
            android:id="@+id/progress_bar_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical|end"
            android:layout_marginEnd="@dimen/il_margin_medium"
            android:layout_marginRight="@dimen/il_margin_medium"
            android:visibility="invisible" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>