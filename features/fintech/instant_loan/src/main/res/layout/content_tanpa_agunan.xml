<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16">

    <TextView
        android:id="@+id/text_form_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_loan_amount"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/loan_amount_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_10"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_form_description"
        app:layout_constraintBottom_toBottomOf="@+id/text_form_description"
        app:layout_constraintStart_toEndOf="@+id/text_form_description" />


    <com.tokopedia.instantloan.view.ui.WidgetAddRemove
        android:id="@+id/widget_add_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_form_description"
        app:war_btnDisableTintColor="@color/grey_400"
        app:war_btnEnableTintColor="@color/colorPrimary" />


    <TextView
        android:id="@+id/text_loan_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/il_loan_period"
        android:textColor="@color/black_54"
        android:layout_marginTop="@dimen/dp_16"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/widget_add_remove"
        tools:layout_editor_absoluteX="0dp" />


    <include
        android:id="@+id/spinner_label_nominal"
        layout="@layout/il_spinner_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/il_margin_small"
        app:layout_constraintEnd_toEndOf="@+id/text_loan_period"
        app:layout_constraintStart_toStartOf="@+id/text_loan_period"
        app:layout_constraintTop_toBottomOf="@+id/text_loan_period" />

    <include
        android:id="@+id/spinner_value_nominal"
        layout="@layout/il_spinner_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/il_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_label_nominal"
        app:layout_constraintTop_toBottomOf="@+id/text_loan_period" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/il_margin_xlarge"
        app:cardBackgroundColor="@color/orange_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_value_nominal">

        <TextView
            android:id="@+id/button_search_pinjaman"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/label_search_loans"
            android:textColor="@color/white"
            android:textSize="@dimen/il_text_size_regular" />

        <ProgressBar
            android:id="@+id/progress_bar_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical|end"
            android:layout_marginEnd="@dimen/il_margin_medium"
            android:layout_marginRight="@dimen/il_margin_medium"
            android:visibility="invisible" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>