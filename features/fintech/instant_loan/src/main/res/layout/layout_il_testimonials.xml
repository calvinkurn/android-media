<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_4"
    android:paddingEnd="@dimen/dp_4"
    android:paddingRight="@dimen/dp_4"
    android:paddingLeft="@dimen/dp_4"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_label_testimonial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/il_label_testimonials"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.instantloan.view.ui.HeightWrappingViewPager
        android:id="@+id/il_view_pager_testimonials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label_testimonial" />


</android.support.constraint.ConstraintLayout>