<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_outer_tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/il_margin_medium"
    android:layout_marginRight="@dimen/il_margin_medium"
    android:layout_marginTop="62dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_instant_fund"
        android:layout_width="@dimen/width_il_tab_button"
        android:layout_height="@dimen/height_il_tab_button"
        android:layout_marginEnd="@dimen/il_margin_regular"
        android:layout_marginRight="@dimen/il_margin_regular"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/shadow_card_tab"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/button_instant_fund"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_regular"
            android:background="@null"
            android:clickable="false"
            android:drawablePadding="@dimen/il_margin_small"
            android:drawableTop="@drawable/ic_dana_instan_enable"
            android:gravity="center"
            android:paddingLeft="@dimen/il_margin_medium"
            android:paddingRight="@dimen/il_margin_medium"
            android:text="@string/label_instant_fund"
            android:textAllCaps="false"
            android:textColor="@color/medium_green" />

        <View
            android:id="@+id/view_instant_fund"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/instant_loan_circle" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_no_collateral"
        android:layout_width="@dimen/width_il_tab_button"
        android:layout_height="@dimen/height_il_tab_button"
        android:layout_marginEnd="@dimen/il_margin_regular"
        android:layout_marginRight="@dimen/il_margin_regular"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/shadow_card_tab"
        app:cardUseCompatPadding="true">


        <Button
            android:id="@+id/button_no_collateral"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_regular"
            android:background="@null"
            android:clickable="false"
            android:drawablePadding="@dimen/il_margin_small"
            android:drawableTop="@drawable/ic_tapna_agunan_disable"
            android:gravity="center"
            android:paddingLeft="@dimen/il_margin_medium"
            android:paddingRight="@dimen/il_margin_medium"
            android:text="@string/label_no_collateral"
            android:textAllCaps="false" />

        <View
            android:id="@+id/view_no_collateral"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/instant_loan_circle" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_with_collateral"
        android:layout_width="@dimen/width_il_tab_button"
        android:layout_height="@dimen/height_il_tab_button"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/shadow_card_tab"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/button_with_collateral"
            style="@style/DefaultLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/il_margin_regular"
            android:background="@null"
            android:clickable="false"
            android:drawablePadding="@dimen/il_margin_small"
            android:drawableTop="@drawable/ic_dengan_agunan_disable"
            android:gravity="center"
            android:paddingLeft="@dimen/il_margin_medium"
            android:paddingRight="@dimen/il_margin_medium"
            android:text="@string/label_with_collateral"
            android:textAllCaps="false" />

        <View
            android:id="@+id/view_with_collateral"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/instant_loan_circle" />

    </android.support.v7.widget.CardView>

</LinearLayout>