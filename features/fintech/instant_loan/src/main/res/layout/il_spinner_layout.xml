<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_label_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pilih" />

    <ImageView
        android:id="@+id/drop_down_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:src="@drawable/ic_arrow_down_grey"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label_text" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/grey_300"
        app:layout_constraintEnd_toEndOf="@+id/drop_down_arrow"
        app:layout_constraintStart_toStartOf="@+id/tv_label_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_text" />

</android.support.constraint.ConstraintLayout>