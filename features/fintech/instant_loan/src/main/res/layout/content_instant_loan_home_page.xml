<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/il_margin_medium"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/text_form_description"
            style="@style/DefaultLabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/description_instant_fund"
            android:textColor="@color/black_38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_info_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_form_description">

            <TextView
                android:id="@+id/text_label_amount"
                style="@style/LoanInfoLabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/il_margin_medium"
                android:text="@string/label_amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_value_amount"
                style="@style/DefaultValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:text="Rp600 Rb -  Rp1,2 Juta"
                app:layout_constraintBottom_toBottomOf="@+id/text_label_amount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_label_amount" />


            <TextView
                android:id="@+id/text_label_processing_time"
                style="@style/LoanInfoLabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/label_processing_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_label_amount" />

            <TextView
                android:id="@+id/text_value_processing_time"
                style="@style/DefaultValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textStyle="bold"
                android:text="Kurang dari 24 Jam"
                app:layout_constraintBottom_toBottomOf="@+id/text_label_processing_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_label_processing_time" />


            <TextView
                android:id="@+id/text__interest_rate"
                style="@style/LoanInfoLabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/label_interest_rate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_label_processing_time" />

            <TextView
                android:id="@+id/text_value_interest_rate"
                style="@style/DefaultValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="@+id/text__interest_rate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text__interest_rate"
                tools:text="Rp66.000 - Rp201.600" />


        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/line_separator_vertical_two"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/il_margin_medium"
            android:background="@color/white_four"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_info_one" />

        <TextView
            android:id="@+id/text_form_disclaimer"
            style="@style/DefaultLabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/disclaimer_instant_fund"
            android:textColor="@color/black_38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_separator_vertical_two" />

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:cardBackgroundColor="@color/orange_red"
            app:cardCornerRadius="@dimen/dp_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_form_disclaimer">

            <TextView
                android:id="@+id/button_search_pinjaman"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="@dimen/dp_12"
                android:text="@string/label_search_loans"
                android:textColor="@color/white"
                android:textSize="@dimen/il_text_size_regular" />

            <ProgressBar
                android:id="@+id/progress_bar_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right|center_vertical|end"
                android:layout_marginEnd="@dimen/il_margin_medium"
                android:layout_marginRight="@dimen/il_margin_medium"
                android:visibility="invisible" />
        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>