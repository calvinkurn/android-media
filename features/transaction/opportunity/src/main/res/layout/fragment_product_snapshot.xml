<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light">

    <ScrollView
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light">

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.tokopedia.opportunity.snapshot.customview.HeaderInfoView
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <com.tokopedia.opportunity.snapshot.customview.PictureView
                android:id="@+id/view_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"/>

            <ProgressBar
                android:id="@+id/view_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <com.tokopedia.opportunity.snapshot.customview.FreeReturnView
                android:id="@+id/view_free_return_opportunity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.tokopedia.opportunity.snapshot.customview.DetailInfoView
                android:id="@+id/view_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.tokopedia.opportunity.snapshot.customview.DescriptionView
                android:id="@+id/view_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.tokopedia.opportunity.snapshot.customview.ShopInfoView
                android:id="@+id/view_shop_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
