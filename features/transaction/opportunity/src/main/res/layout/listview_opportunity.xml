<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/opportunity_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cards_ui"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/product_avatar"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_margin="@dimen/dp_10"
        tools:src="@drawable/remove"/>

    <TextView
        android:id="@+id/deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/product_avatar"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/product_avatar"
        android:layout_toRightOf="@+id/product_avatar"
        android:background="@drawable/label_deadline"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="@dimen/fontvvs"
        tools:text="24 jam lagi"/>

    <TextView
        android:id="@+id/reputation_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/product_avatar"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toEndOf="@+id/deadline"
        android:layout_toRightOf="@+id/deadline"
        android:background="@drawable/custom_rounded_corner_label"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="2dp"
        android:textColor="@color/red_500"
        android:textSize="@dimen/fontvvs"
        tools:visibility="visible"
        android:visibility="gone"
        tools:text="24 jam lagi"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deadline"
        android:layout_toEndOf="@id/product_avatar"
        android:layout_toRightOf="@id/product_avatar"
        android:textStyle="bold"
        tools:text="iPhone Samsung Galaxy 7+"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_toEndOf="@id/product_avatar"
        android:layout_toRightOf="@id/product_avatar"
        android:textColor="@color/orange"
        tools:text="Rp 10.000.000"/>

</RelativeLayout>