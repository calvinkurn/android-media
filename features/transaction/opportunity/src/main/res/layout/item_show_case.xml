<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_group_tutor_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_black"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/opportunity_showcase_padding"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/opportunity_showcase_padding"
        android:textStyle="bold"
        tools:textSize="@dimen/font_medium" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:paddingLeft="@dimen/opportunity_showcase_padding"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/opportunity_showcase_padding"
        android:paddingBottom="@dimen/dp_8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/grey_600" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_previous"
            android:layout_width="@dimen/buttom_width_small"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="left"
            android:paddingLeft="@dimen/opportunity_showcase_padding"
            android:paddingTop="@dimen/opportunity_showcase_padding"
            android:paddingBottom="@dimen/opportunity_showcase_padding" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view_group_indicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"></androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_next"
            android:layout_width="@dimen/buttom_width_small"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="right"
            android:paddingTop="@dimen/opportunity_showcase_padding"
            android:paddingRight="@dimen/opportunity_showcase_padding"
            android:paddingBottom="@dimen/opportunity_showcase_padding" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
