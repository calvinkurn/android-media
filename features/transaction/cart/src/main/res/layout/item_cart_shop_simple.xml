<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:paddingLeft="@dimen/dp_9"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_9"
    android:paddingBottom="@dimen/dp_10">

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cb_select_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_shop_badge"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintStart_toEndOf="@+id/cb_select_shop"
        app:layout_constraintTop_toTopOf="@+id/cb_select_shop"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_badge_shop_official"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_0"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toEndOf="@+id/image_shop_badge"
        app:layout_constraintTop_toTopOf="@+id/cb_select_shop"
        app:typographyType="heading_6"
        tools:text="Loaa Store df" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/image_pin"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        app:icon_color_light_enable="@color/Unify_Static_Black"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="PUSH_PIN"
        app:layout_constraintBottom_toBottomOf="@+id/text_shop_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_shop_name" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/rl_product_policies_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_toEndOf="@+id/cb_select_shop"
        android:foregroundGravity="center_vertical"
        app:flexWrap="wrap"
        app:layout_constraintStart_toEndOf="@+id/cb_select_shop"
        app:layout_constraintTop_toBottomOf="@+id/cb_select_shop">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_fulfillment"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:scaleType="fitCenter"
            app:unify_image_corner_radius="0" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_shop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Tangerang Selatan" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/separator_estimated_time_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:text="@string/label_separator_line"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_estimated_time_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small"
            app:typographyWeight="reguler"
            tools:text="Estimasi Tiba: 2 Hari" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/separator_pre_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:text="@string/label_separator_line"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_pre_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:labelType="general_light_grey"
            tools:labelTitle="Pre Order 8 Hari" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/separator_incident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_lvl2"
            android:paddingRight="@dimen/spacing_lvl2"
            android:text="@string/label_separator_line"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_incident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:labelType="general_light_grey"
            tools:labelTitle="This Is Incident Label" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/separator_free_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_lvl2"
            android:paddingRight="@dimen/spacing_lvl2"
            android:text="@string/label_separator_line"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_free_shipping"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:gravity="center_vertical"
            app:unify_image_type="rect"
            tools:src="@color/Unify_G500" />

    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>