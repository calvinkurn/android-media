<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="@dimen/sp_2"
        android:text="@string/text_heading_produk_asuransi"
        android:textColor="@color/black_70"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_heading"
        android:layout_marginTop="@dimen/dp_18"
        android:lineSpacingExtra="@dimen/sp_6"
        android:text="@string/text_desc_asuransi"
        android:textColor="@color/font_black_secondary_54"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/button_positive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_6"
        android:text="@string/text_button_positive"
        android:textColor="@color/colorPrimary"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/button_negative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_toStartOf="@+id/button_positive"
        android:layout_toLeftOf="@+id/button_positive"
        android:gravity="center_horizontal"
        android:text="@string/text_button_negative"
        android:textColor="@color/black_38"
        app:typographyType="body_3" />

</RelativeLayout>