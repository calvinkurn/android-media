<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iu_image_product"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4"
        android:alpha="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_product_name" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:alpha="0.5"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iu_image_product"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        tools:text="Tas organizerdfnlgjdhdfhn sepeda double container yang panjang" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_product_variant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:paddingTop="@dimen/dp_2"
        android:textColor="@color/Unify_N700_68"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_product_name"
        app:layout_constraintStart_toStartOf="@id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        app:typographyType="body_3"
        tools:text="Biru, XL"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_slash_price_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_product_variant"
        android:layout_marginStart="@dimen/dp_16"
        android:alpha="0.5"
        android:gravity="center_vertical"
        app:labelType="general_dark_red"
        app:layout_constraintBottom_toBottomOf="@+id/text_product_price"
        app:layout_constraintStart_toEndOf="@+id/iu_image_product"
        app:layout_constraintTop_toTopOf="@+id/text_product_price"
        tools:labelTitle="1%"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_slash_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_product_price"
        android:layout_alignBottom="@+id/text_product_price"
        android:alpha="0.5"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_4"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/text_product_price"
        app:layout_constraintStart_toEndOf="@+id/label_slash_price_percentage"
        app:layout_constraintTop_toTopOf="@+id/text_product_price"
        app:typographyType="body_3"
        tools:text="Rp300.000"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_product_variant"
        android:layout_alignBottom="@+id/label_slash_price_percentage"
        android:layout_marginTop="@dimen/dp_8"
        android:alpha="0.5"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_4"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toEndOf="@+id/text_slash_price"
        app:layout_constraintTop_toBottomOf="@+id/text_product_variant"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp100.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_move_to_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_16"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="0dp"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/label_move_to_wishlist"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/btn_delete_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_delete_cart"
        app:typographyType="body_3" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/btn_delete_cart"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_16"
        app:icon_name="DELETE"
        app:layout_constraintEnd_toStartOf="@+id/tv_product_unavailable_action"
        app:layout_constraintTop_toBottomOf="@+id/iu_image_product" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_unavailable_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dp_16"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/btn_delete_cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_delete_cart"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Lihat Produk Serupa"
        tools:visibility="visible" />

    <Space
        android:id="@+id/space"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_delete_cart" />

    <View
        android:id="@+id/v_divider_item_cart_error"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/Unify_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/space"
        tools:visibility="visible" />

    <Space
        android:id="@+id/space2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_divider_item_cart_error" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="space2,v_divider_item_cart_error" />

</androidx.constraintlayout.widget.ConstraintLayout>