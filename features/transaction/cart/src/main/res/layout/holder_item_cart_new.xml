<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/cb_select_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingEnd="8dp" />

        <RelativeLayout
            android:id="@+id/rl_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cb_select_item">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/iu_image_product"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/iu_image_product"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_2"
                tools:text="Tas organizerdfnlgjdhdfhn sepeda double container" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_product_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_product_name"
                android:layout_toEndOf="@+id/iu_image_product"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:textColor="@color/Unify_N700_68"
                android:visibility="gone"
                app:typographyType="body_3"
                tools:text="Biru, XL"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_qty_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_product_name"
                android:layout_toEndOf="@+id/text_product_variant"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:textColor="@color/Unify_R600"
                android:visibility="gone"
                app:typographyType="body_3"
                tools:text="Sisa 3"
                tools:visibility="visible" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/layout_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_product_variant"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/iu_image_product"
                android:foregroundGravity="center_vertical"
                android:paddingTop="2dp"
                app:flexWrap="wrap"
                tools:visibility="visible">

                <com.tokopedia.unifycomponents.Label
                    android:id="@+id/label_slash_price_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_product_variant"
                    android:layout_marginEnd="4dp"
                    android:layout_toEndOf="@+id/iu_image_product"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    app:labelType="general_dark_red"
                    tools:labelTitle="60%"
                    tools:visibility="visible" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_slash_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/text_product_price"
                    android:layout_alignBottom="@+id/text_product_price"
                    android:layout_marginEnd="4dp"
                    android:layout_toEndOf="@+id/label_slash_price_percentage"
                    android:gravity="center_vertical"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_3"
                    tools:text="Rp300.000"
                    tools:visibility="visible" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_product_variant"
                    android:layout_alignBottom="@+id/label_slash_price_percentage"
                    android:layout_toEndOf="@+id/text_slash_price"
                    android:gravity="center_vertical"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_2"
                    app:typographyWeight="bold"
                    tools:text="Rp100.000" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/layout_product_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_product_price"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/iu_image_product"
                android:foregroundGravity="center_vertical"
                android:paddingTop="2dp"
                app:flexWrap="wrap"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_incident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_product_info"
                android:layout_toEndOf="@+id/iu_image_product"
                android:paddingTop="2dp"
                android:textColor="@color/Unify_N700_68"
                android:visibility="gone"
                app:typographyType="body_3"
                tools:text="Campaign"
                tools:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_shop_note_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_product_info"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            tools:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Tulis Catatan"
                android:textColor="@color/Unify_GN500"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/button_delete_cart"
                app:layout_constraintEnd_toStartOf="@+id/button_delete_cart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_delete_cart"
                app:typographyType="body_3"
                tools:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:visibility="visible">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_3"
                    app:typographyWeight="reguler"
                    tools:text="sdkjf skdjbfg jksdg kjsdbg sfdsf jksdbg!"
                    tools:visibility="visible" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_label_remark_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="0dp"
                    android:text="Ubah"
                    android:textColor="@color/Unify_GN500"
                    app:typographyType="body_3"
                    app:typographyWeight="reguler"
                    tools:text="Ubah" />

            </LinearLayout>

            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_product_info"
                app:text_field_label="Catatan untuk barang ini"
                tools:layout_height="32dp"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_shop_note_section"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_move_to_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="0dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="@string/label_move_to_wishlist"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/btn_delete_cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/dp_18"
                app:icon_name="DELETE" />

            <com.tokopedia.unifycomponents.QuantityEditorUnify
                android:id="@+id/qty_editor_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/holder_item_cart_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="16dp"
        android:background="@color/Unify_N100" />

</LinearLayout>