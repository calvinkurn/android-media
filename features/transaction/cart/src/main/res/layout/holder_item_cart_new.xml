<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_warning_and_error"
        layout="@layout/layout_item_warning_and_error"
        tools:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_cart_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_16">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <CheckBox
                    android:id="@+id/cb_select_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="@dimen/dp_30"
                    android:button="@drawable/ic_cart_check_box"
                    android:paddingRight="@dimen/dp_8" />

                <RelativeLayout
                    android:id="@+id/rl_product_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cb_select_item"
                    android:layout_toRightOf="@id/cb_select_item">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/iv_product_card"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_72"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_6"
                        app:cardElevation="@dimen/dp_0">

                        <ImageView
                            android:id="@+id/iv_image_product"
                            android:layout_width="@dimen/dp_72"
                            android:layout_height="@dimen/dp_72"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/empty_photo" />

                    </androidx.cardview.widget.CardView>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toEndOf="@+id/iv_product_card"
                        android:layout_toRightOf="@+id/iv_product_card"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/Unify_N700_96"
                        app:typographyType="body_2"
                        tools:text="Tas organizerdfnlgjdhdfhn sepeda double container" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_product_variant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_product_name"
                        android:layout_toEndOf="@+id/iv_product_card"
                        android:layout_toRightOf="@+id/iv_product_card"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/dp_2"
                        android:textColor="@color/Unify_N700_68"
                        android:visibility="gone"
                        app:typographyType="body_3"
                        tools:text="Biru, XL"
                        tools:visibility="visible" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_qty_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_product_name"
                        android:layout_toRightOf="@+id/text_product_variant"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/dp_2"
                        android:textColor="@color/Unify_R600"
                        android:visibility="gone"
                        app:typographyType="body_3"
                        tools:text="Sisa 3"
                        tools:visibility="visible" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/layout_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_product_variant"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_toEndOf="@+id/iv_product_card"
                        android:foregroundGravity="center_vertical"
                        android:paddingTop="@dimen/dp_2"
                        app:flexWrap="wrap"
                        tools:visibility="visible">

                        <com.tokopedia.unifycomponents.Label
                            android:id="@+id/label_slash_price_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text_product_variant"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:layout_toEndOf="@+id/iv_product_card"
                            android:gravity="center_vertical"
                            android:visibility="gone"
                            app:labelType="general_dark_red"
                            tools:labelTitle="60%"
                            tools:visibility="visible" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/text_slash_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/text_product_price"
                            android:layout_alignBottom="@+id/text_product_price"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:layout_toEndOf="@+id/label_slash_price_percentage"
                            android:gravity="center_vertical"
                            android:textColor="@color/Unify_N700_96"
                            app:typographyType="body_3"
                            tools:text="Rp300.000"
                            tools:visibility="visible" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/text_product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text_product_variant"
                            android:layout_alignBottom="@+id/label_slash_price_percentage"
                            android:layout_toEndOf="@+id/text_slash_price"
                            android:gravity="center_vertical"
                            android:textColor="@color/Unify_N700_96"
                            app:typographyType="body_2"
                            app:typographyWeight="bold"
                            tools:text="Rp100.000" />

                    </com.google.android.flexbox.FlexboxLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/layout_product_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_product_price"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_toEndOf="@+id/iv_product_card"
                        android:layout_toRightOf="@+id/iv_product_card"
                        android:foregroundGravity="center_vertical"
                        android:paddingTop="@dimen/dp_2"
                        app:flexWrap="wrap"
                        tools:visibility="visible" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_incident"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_product_info"
                        android:layout_toEndOf="@+id/iv_product_card"
                        android:layout_toRightOf="@+id/iv_product_card"
                        android:paddingTop="@dimen/dp_2"
                        android:textColor="@color/Unify_N700_68"
                        android:visibility="gone"
                        app:typographyType="body_3"
                        tools:text="Campaign"
                        tools:visibility="visible" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_note_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_product_info"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="vertical"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:visibility="visible">

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tv_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/Unify_N700_96"
                            app:typographyType="body_3"
                            app:typographyWeight="reguler"
                            tools:text="sdkjf skdjbfg jksdg kjsdbg sfdsf jksdbg!"
                            tools:visibility="visible" />

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tv_label_remark_option"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_button_add_note"
                            android:textColor="@color/Unify_N700_68"
                            app:typographyType="body_3"
                            app:typographyWeight="reguler"
                            tools:text="Ubah" />

                    </LinearLayout>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_label_remark_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_remark_title"
                        android:textColor="@color/Unify_G500"
                        app:typographyType="body_3"
                        app:typographyWeight="reguler" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_minus4"
                        android:layout_marginRight="@dimen/dp_minus4"
                        android:fontFamily="sans-serif"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="3"
                        android:overScrollMode="always"
                        android:paddingBottom="@dimen/dp_16"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:textColor="@color/Unify_N700_68"
                        android:textColorHighlight="@color/Unify_G400"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="normal"
                        app:backgroundTint="@color/Unify_G400"
                        tools:ignore="TextFields"
                        tools:text="Saya pesan warna merah yah min, jangan sampai salah kirim
barangnya gan! coy coy coy" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_error_form_remark_validation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_remark"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:maxLines="1"
                        android:paddingStart="@dimen/dp_4"
                        android:paddingLeft="@dimen/dp_4"
                        android:textColor="@color/Unify_R600"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="normal"
                        android:visibility="gone"
                        app:typographyType="body_3"
                        app:typographyWeight="reguler"
                        tools:ignore="RtlSymmetry,SmallSp"
                        tools:text="Maksimal 2 broh"
                        tools:visibility="gone" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_note_char_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_remark"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:lineSpacingExtra="0sp"
                        android:visibility="gone"
                        app:typographyType="body_3"
                        app:typographyWeight="reguler"
                        tools:text="60/140"
                        tools:visibility="visible" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_product_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_shop_note_section">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/text_move_to_wishlist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingStart="0dp"
                                android:paddingTop="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_16"
                                android:paddingBottom="@dimen/dp_8"
                                android:text="@string/label_move_to_wishlist"
                                android:textColor="@color/Unify_N700_68"
                                app:typographyType="body_3" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/btn_delete_cart"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                android:layout_marginEnd="@dimen/dp_18"
                                android:layout_marginRight="@dimen/dp_18"
                                app:srcCompat="@drawable/ic_delete_cart"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/btn_qty_min"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                app:srcCompat="@drawable/bg_button_counter_minus_checkout" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/et_qty"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="6"
                                android:textColor="@color/Unify_N700_68"
                                android:textColorHighlight="@color/Unify_G400"
                                android:textSize="@dimen/sp_16"
                                app:backgroundTint="@color/Unify_G400"
                                tools:text="10000" />

                            <ImageView
                                android:id="@+id/btn_qty_plus"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                app:srcCompat="@drawable/bg_button_counter_plus_checkout"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                        <com.tokopedia.unifyprinciples.Typography
                            android:id="@+id/tv_error_form_validation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="right"
                            android:maxLines="2"
                            android:textAlignment="gravity"
                            android:textColor="@color/Unify_R600"
                            android:textSize="@dimen/sp_12"
                            android:visibility="gone"
                            app:typographyType="body_3"
                            app:typographyWeight="reguler"
                            tools:ignore="SmallSp"
                            tools:text="Maksimal 2 broh hjadjf askjbfk kjabfdk ashfb aksbfkabsf "
                            tools:visibility="visible" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

    <View
        android:id="@+id/holder_item_cart_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@color/Unify_N100" />

</LinearLayout>