<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_120"
    android:layout_height="@dimen/dp_270"
    android:layout_marginLeft="@dimen/dp_4"
    android:layout_marginRight="@dimen/dp_4"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewHolder"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                app:srcCompat="@color/Unify_N100" />

            <ImageButton
                android:id="@+id/img_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_round_button_with_shadow"
                app:srcCompat="@drawable/ic_wishlist_checkout_on" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_4"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewHolder"
        app:typographyType="heading_6"
        tools:text="Nexus 5Xrose gold aaaa aaaa aaaa aaaa aaa" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_Y500"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        app:typographyType="body_2"
        tools:text="Rp 3.121.500.000" />

    <ImageView
        android:id="@+id/img_badge"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        tools:src="@drawable/ic_power_merchant" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_badge_dot_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_8"
        android:text="â€¢"
        android:textColor="@color/Unify_N700_32"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toEndOf="@+id/img_badge"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_badge_dot_separator"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        app:typographyType="body_3"
        tools:text="Kota Administrasi Jakarta Selatanan " />

    <ImageView
        android:id="@+id/img_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/tv_review_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop_location"
        tools:src="@drawable/ic_star_three" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_review_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/Unify_N700_32"
        app:layout_constraintStart_toEndOf="@+id/img_rating"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop_location"
        app:typographyType="body_3"
        tools:text="(199)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_atc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/checkout_module_bg_button_atc"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="+ Keranjang"
        android:textAllCaps="false"
        android:textColor="@color/Unify_Y500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="heading_6" />

</androidx.constraintlayout.widget.ConstraintLayout>