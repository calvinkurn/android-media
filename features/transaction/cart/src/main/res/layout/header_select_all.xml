<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/select_all_view_holder_height"
    android:layout_alignParentTop="true"
    android:background="@color/Unify_Background"
    android:paddingStart="16dp"
    android:paddingEnd="0dp">

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/checkbox_global"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_select_all_product"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_global"
        app:layout_constraintStart_toEndOf="@+id/checkbox_global"
        app:layout_constraintTop_toTopOf="@+id/checkbox_global"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_action_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/unify_space_16"
        android:paddingTop="12dp"
        android:paddingEnd="@dimen/unify_space_16"
        android:paddingBottom="@dimen/unify_space_16"
        android:text="@string/label_menu_cart_remove"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>