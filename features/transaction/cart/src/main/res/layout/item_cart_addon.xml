<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_cart_addon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_addon_info_rounded_grey">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_addon_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/desc_addon"
        app:layout_constraintTop_toTopOf="@id/desc_addon"
        app:icon_name="CHECK"
        app:icon_color_light_enable="@color/Unify_GN500"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/desc_addon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="body_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_addon_check"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_addon_chevron"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/promo_checkout_icon_chev_desc"
        app:layout_constraintBottom_toBottomOf="@id/desc_addon"
        app:layout_constraintTop_toTopOf="@id/desc_addon"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon_name="CHEVRON_RIGHT" />

</androidx.constraintlayout.widget.ConstraintLayout>
