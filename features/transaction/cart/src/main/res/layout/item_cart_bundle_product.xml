<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    tools:layout_height="135dp">

    <View
        android:id="@+id/v_bindling_product_separator"
        android:layout_width="@dimen/dp_4"
        android:layout_height="wrap_content"
        android:background="@color/Unify_NN50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iu_image_product"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintStart_toEndOf="@+id/v_bindling_product_separator"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iu_image_product"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        tools:text="Tas organizerdfnlgjdhdfhn sepeda double container" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_product_variant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_2"
        android:textColor="@color/Unify_N700_68"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/iu_image_product"
        app:layout_constraintTop_toBottomOf="@+id/text_product_name"
        app:typographyType="body_3"
        tools:text="Biru, XL"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_qty_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_product_name"
        android:layout_toEndOf="@+id/text_product_variant"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_2"
        android:textColor="@color/Unify_R600"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_product_variant"
        app:layout_constraintTop_toBottomOf="@+id/text_product_name"
        app:typographyType="body_3"
        tools:text="Sisa 3"
        tools:visibility="visible" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/layout_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/iu_image_product"
        android:layout_marginTop="@dimen/dp_8"
        app:flexWrap="wrap"
        app:layout_constraintStart_toEndOf="@+id/iu_image_product"
        app:layout_constraintTop_toBottomOf="@+id/text_product_variant"
        tools:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_4"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp100.000" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_slash_price_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_4"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:labelType="general_light_red"
            tools:labelTitle="60%"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_slash_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            tools:text="Rp300.000"
            tools:visibility="visible" />

    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/layout_product_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:foregroundGravity="center_vertical"
        android:paddingTop="@dimen/dp_2"
        app:flexWrap="wrap"
        app:layout_constraintStart_toEndOf="@+id/iu_image_product"
        app:layout_constraintTop_toBottomOf="@+id/layout_product_price"
        tools:layout_height="20dp"
        tools:layout_width="20dp"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/text_field_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/v_bindling_product_separator"
        app:layout_constraintTop_toBottomOf="@+id/iu_image_product"
        app:text_field_label="Catatan untuk barang ini"
        tools:layout_height="32dp"
        tools:visibility="gone" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="Tulis Catatan"
        android:textColor="@color/Unify_GN500"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/v_bindling_product_separator"
        app:layout_constraintTop_toBottomOf="@+id/iu_image_product"
        app:typographyType="body_3"
        tools:visibility="gone" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_notes_filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/v_bindling_product_separator"
        app:layout_constraintTop_toBottomOf="@+id/iu_image_product"
        app:typographyType="body_3"
        tools:text="Jangan Jangan Jangan Jangan Jangan Jangan Jangan "
        tools:visibility="gone" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_notes_change"
        android:layout_width="@dimen/dp_40"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:text="Ubah"
        android:textColor="@color/Unify_GN500"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/text_notes_filled"
        app:layout_constraintStart_toEndOf="@+id/text_notes_filled"
        app:layout_constraintTop_toTopOf="@+id/text_notes_filled"
        app:typographyType="body_3"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>