<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="8dp"
    android:paddingStart="8dp"
    android:paddingEnd="12dp"
    android:paddingBottom="8dp"
    android:background="@color/Unify_GN500">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_arrow_down"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:icon_name="ARROW_DOWN"
        app:icon_color_light_enable="@color/Unify_NN0"
        app:icon_color_night_enable="@color/Unify_NN0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon_arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="4dp"
        android:textColor="@color/Unify_NN0"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        android:text="Waktunya beli lagi!"
        tools:text="Waktunya beli lagi!" />

</androidx.constraintlayout.widget.ConstraintLayout>