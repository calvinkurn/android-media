<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/Unify_Background">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_shop_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="4dp">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_shop_badge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_shop_name"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_badge_shop_official"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_shop_badge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:typographyType="heading_6"
            tools:text="Loaa Store df" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_bundling_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/checkbox_bundle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_bundle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@+id/checkbox_bundle"
            app:layout_constraintTop_toTopOf="parent"
            app:unify_image_corner_radius="0" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_bundle_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_bundle"
            app:layout_constraintEnd_toStartOf="@+id/text_change_bundle"
            app:layout_constraintStart_toEndOf="@+id/image_bundle"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Paket Murah Banget" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:flexWrap="wrap"
            app:layout_constraintEnd_toStartOf="@+id/text_change_bundle"
            app:layout_constraintStart_toEndOf="@+id/checkbox_bundle"
            app:layout_constraintTop_toBottomOf="@+id/text_bundle_title">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_bundle_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_NN950_96"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Rp100.000" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/label_bundle_slash_price_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:labelType="general_light_red"
                tools:labelTitle="60%"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_bundle_slash_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_toEndOf="@+id/label_bundle_slash_price_percentage"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_NN600"
                app:typographyType="body_3"
                tools:text="Rp300.000"
                tools:visibility="visible" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_change_bundle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:text="Ubah"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_product_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:layout_height="135dp">

        <View
            android:id="@+id/v_bundling_product_separator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:background="@color/Unify_NN50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/checkbox_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="30dp"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_image_product"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/v_bundling_product_separator"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintStart_toEndOf="@+id/v_bundling_product_separator" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_bundle_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingBottom="2dp"
            app:layout_constraintStart_toEndOf="@+id/iu_image_product"
            app:layout_constraintTop_toTopOf="@+id/iu_image_product"
            tools:text="Paket Isi 9"
            app:labelType="general_light_green"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iu_image_product"
            app:layout_constraintTop_toBottomOf="@+id/label_bundle_quantity"
            app:typographyType="body_2"
            tools:text="Tas organizerdfnlgjdhdfhn sepeda double container" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_product_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:textColor="@color/Unify_NN950_68"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/iu_image_product"
            app:layout_constraintTop_toBottomOf="@+id/text_product_name"
            app:typographyType="body_3"
            tools:text="Biru, XL"
            tools:visibility="gone" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_qty_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_product_name"
            android:layout_toEndOf="@+id/text_product_variant"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:textColor="@color/Unify_RN500"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/text_product_variant"
            app:layout_constraintTop_toBottomOf="@+id/text_product_name"
            app:typographyType="body_3"
            tools:text="Sisa 3"
            tools:visibility="gone" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layout_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iu_image_product"
            app:flexWrap="wrap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iu_image_product"
            app:layout_constraintTop_toBottomOf="@+id/text_product_variant"
            tools:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_NN950_96"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Rp100.000" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/label_slash_price_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:labelType="general_light_red"
                tools:labelTitle="60%"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_slash_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_NN600"
                app:typographyType="body_3"
                tools:text="Rp300.000"
                tools:visibility="visible" />

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layout_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:foregroundGravity="center_vertical"
            android:paddingTop="2dp"
            app:flexWrap="wrap"
            app:layout_constraintStart_toEndOf="@+id/iu_image_product"
            app:layout_constraintTop_toBottomOf="@+id/layout_product_price"
            tools:layout_height="20dp"
            tools:layout_width="20dp"
            tools:visibility="gone" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_incident"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_product_info"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iu_image_product"
            android:paddingTop="2dp"
            android:textColor="@color/Unify_NN950_68"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/iu_image_product"
            app:layout_constraintTop_toBottomOf="@+id/layout_product_info"
            app:typographyType="body_3"
            tools:text="Incident"
            tools:visibility="gone" />

        <com.tokopedia.unifycomponents.TextFieldUnify2
            android:id="@+id/text_field_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/v_bundling_product_separator"
            app:layout_constraintTop_toBottomOf="@+id/iu_image_product"
            app:unify_text_field_label="@string/cart_label_text_field_notes"
            app:unify_text_field_label_static="true"
            tools:layout_height="32dp"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/cart_label_notes"
            android:textColor="@color/Unify_GN500"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/v_bundling_product_separator"
            app:layout_constraintTop_toBottomOf="@+id/iu_image_product"
            app:typographyType="body_3"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_notes_filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/text_notes_change"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/v_bundling_product_separator"
            app:layout_constraintTop_toBottomOf="@+id/iu_image_product"
            app:typographyType="body_3"
            tools:text="Jangan Jangan Jangan Jangan Jangan Jangan Jangan "
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_notes_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:paddingStart="2dp"
            android:paddingTop="8dp"
            android:paddingEnd="2dp"
            android:paddingBottom="8dp"
            android:text="@string/label_button_change_note"
            android:textColor="@color/Unify_GN500"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/text_notes_filled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_notes_filled"
            app:layout_constraintTop_toTopOf="@+id/text_notes_filled"
            app:typographyType="body_3"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_product_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_move_to_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="0dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:text="@string/label_move_to_wishlist"
            android:textColor="@color/Unify_NN950_68"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            tools:visibility="visible" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/button_delete_cart"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:icon_color_light_enable="@color/Unify_NN500"
            app:icon_name="DELETE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/qty_editor_product"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_product_unavailable_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:textColor="@color/Unify_NN950_68"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/button_delete_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_delete_cart"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Lihat Produk Serupa"
            tools:visibility="gone" />

        <com.tokopedia.unifycomponents.QuantityEditorUnify
            android:id="@+id/qty_editor_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950_68"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/holder_item_cart_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="16dp"
        android:background="@color/Unify_NN200" />

</LinearLayout>