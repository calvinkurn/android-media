<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_cart_gifting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_grey">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iu_product"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            app:icon_name="PRODUCT"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/desc_gifting"
            app:layout_constraintTop_toTopOf="@id/desc_gifting" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/desc_gifting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:typographyWeight="reguler"
            app:typographyType="body_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iu_product"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Ada pelengkap untuk semua barang"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iu_chevron_right"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/promo_checkout_icon_chev_desc"
            app:layout_constraintTop_toTopOf="@id/desc_gifting"
            app:layout_constraintBottom_toBottomOf="@id/desc_gifting"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon_name="CHEVRON_RIGHT"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
