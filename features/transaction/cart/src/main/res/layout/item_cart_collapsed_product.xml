<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_collapsed_product"
    android:layout_width="80dp"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_product"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_bundle_icon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/icon_bundling_dms_color"
        app:layout_constraintBottom_toBottomOf="@+id/image_product"
        app:layout_constraintEnd_toEndOf="@+id/image_product"
        app:shapeAppearanceOverlay="@style/roundedImageDisplay" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_variant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_product"
        app:typographyType="body_3"
        tools:visibility="gone"
        tools:text="Biru" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_variant_name"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp9.900.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_product_price"
        app:typographyType="body_3"
        tools:text="1 barang" />


</androidx.constraintlayout.widget.ConstraintLayout>