<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_cart_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:theme="@style/AppTheme.AppBarOverlay">

        <View
            android:id="@+id/status_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/Unify_G500"
            android:visibility="invisible"
            app:layout_collapseMode="pin" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_cart"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:visibility="gone"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp" />

        <com.tokopedia.searchbar.navigation_component.NavToolbar
            android:id="@+id/nav_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="top"
            android:minHeight="?attr/actionBarSize"
            android:visibility="gone"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:toolbarAlwaysShowShadow="false"
            app:toolbarContentType="typeTitle"
            app:toolbarInitialTheme="light"
            app:toolbarPageName="@string/toolbar_page_name_cart"
            app:toolbarTitle="@string/cart" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_cart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_layout" />

                <View
                    android:id="@+id/bottom_layout_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_above="@+id/bottom_layout"
                    android:background="@drawable/shadow_top" />

                <LinearLayout
                    android:id="@+id/ll_promo_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/bottom_layout"
                    android:layout_marginBottom="-10dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/shadow_top" />

                    <com.tokopedia.promocheckout.common.view.widget.ButtonPromoCheckoutView
                        android:id="@+id/promo_checkout_btn_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/Unify_N0"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="14dp"
                        android:background="@color/Unify_N0"
                        android:orientation="horizontal"
                        tools:ignore="DisableBaselineAlignment">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingLeft="16dp"
                            android:paddingEnd="16dp"
                            android:paddingRight="16dp">

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/text_total_payment_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="4sp"
                                android:text="@string/label_price_total"
                                android:textColor="@color/Unify_N700_96"
                                app:typographyType="body_2" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical">

                                <com.tokopedia.unifyprinciples.Typography
                                    android:id="@+id/tv_total_prices"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:textColor="@color/Unify_N700_96"
                                    app:typographyType="heading_4"
                                    tools:text="Rp600.000" />

                                <com.tokopedia.unifycomponents.UnifyImageButton
                                    android:id="@+id/img_chevron_summary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:rotation="180"
                                    app:srcCompat="@drawable/unify_chips_ic_chevron_normal"
                                    app:unifyImageButtonVariant="image" />

                            </LinearLayout>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical">

                            <com.tokopedia.unifycomponents.UnifyButton
                                android:id="@+id/go_to_courier_page_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/content_desc_go_to_courier_page_button"
                                android:gravity="center_vertical"
                                app:unifyButtonSize="medium"
                                app:unifyButtonType="main"
                                app:unifyButtonVariant="filled"
                                tools:text="Checkout" />

                            <View
                                android:id="@+id/v_disabled_go_to_courier_page_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/top_layout"
                    layout="@layout/header_select_all_bundle"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <View
                    android:id="@+id/top_layout_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/top_layout"
                    android:background="@drawable/shadow_bottom" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_network_error_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.tokopedia.globalerror.GlobalError
                android:id="@+id/layout_global_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Unify_N0"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="gone" />

        </FrameLayout>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/tmp_animated_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:visibility="gone" />

</LinearLayout>