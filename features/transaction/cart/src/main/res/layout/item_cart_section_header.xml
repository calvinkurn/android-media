<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/label_show_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:text="@string/label_empty_cart_recent_view"
        app:typographyType="body_1"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ic_show_all"
        app:layout_constraintEnd_toStartOf="@id/ic_show_all"
        app:layout_constraintBottom_toBottomOf="@id/ic_show_all"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:text="@string/label_empty_cart_see_all"
        android:textColor="@color/Unify_GN500"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_show_all"
        android:layout_width="32dp"
        android:layout_height="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_color_night_enable="@color/Unify_GN500"
        app:icon_enable_state="true"
        app:icon_name="CHEVRON_RIGHT" />

    <FrameLayout
        android:id="@+id/fl_action"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_circle"
        app:layout_constraintTop_toTopOf="@id/label_title"
        app:layout_constraintBottom_toBottomOf="@id/label_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"
        >

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_chevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:icon_color_light_enable="@color/Unify_NN950"
            app:icon_color_night_enable="@color/Unify_NN950"
            app:icon_enable_state="true"
            app:icon_name="CHEVRON_RIGHT" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>