<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_cart_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay">

        <View
            android:id="@+id/status_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/green_600"
            android:visibility="invisible"
            app:layout_collapseMode="pin" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_cart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_layout"
                    android:layout_alignParentTop="true" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:clickable="false"
                    android:visibility="gone"
                    app:cardElevation="@dimen/dp_3"
                    tools:visibility="visible">

                    <include layout="@layout/item_select_all" />

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/bottom_layout_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4"
                    android:layout_above="@+id/bottom_layout"
                    android:background="@drawable/bottom_sheet_shadow" />

                <LinearLayout
                    android:id="@+id/ll_promo_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/bottom_layout"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_4"
                        android:background="@drawable/bottom_sheet_shadow" />

                    <com.tokopedia.promocheckout.common.view.widget.ButtonPromoCheckoutView
                        android:id="@+id/promo_checkout_btn_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/dp_16"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingEnd="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_16">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <com.tokopedia.unifyprinciples.Typography
                                    android:id="@+id/text_total_payment_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="4sp"
                                    android:text="@string/label_price_total"
                                    android:textColor="@color/text_black"
                                    app:typographyType="body_2" />

                                <com.tokopedia.unifycomponents.UnifyImageButton
                                    android:id="@+id/img_chevron_summary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:rotation="180"
                                    app:unifyImageButtonVariant="image"
                                    app:srcCompat="@drawable/unify_chips_ic_chevron_normal" />

                            </LinearLayout>

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/tv_total_prices"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textColor="@color/price_label"
                                app:typographyType="heading_4"
                                app:typographyWeight="bold"
                                tools:text="Rp600.000" />

                        </LinearLayout>

                        <com.tokopedia.unifycomponents.UnifyButton
                            android:id="@+id/go_to_courier_page_button"
                            android:layout_width="@dimen/dp_150"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_10"
                            app:unifyButtonSize="medium"
                            app:unifyButtonType="transaction"
                            app:unifyButtonVariant="filled"
                            tools:text="Checkout" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_network_error_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.tokopedia.globalerror.GlobalError
                android:id="@+id/layout_global_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="gone" />

        </FrameLayout>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</LinearLayout>