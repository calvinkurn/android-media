<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shop_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_warning_and_error"
        layout="@layout/layout_item_warning_and_error"
        tools:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_shop_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1">

        <RelativeLayout
            android:id="@+id/rl_shop_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:paddingLeft="@dimen/dp_9"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_10">

            <CheckBox
                android:id="@+id/cb_select_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:button="@drawable/ic_cart_check_box"
                android:paddingRight="@dimen/dp_10" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/cb_select_shop"
                android:layout_toRightOf="@id/cb_select_shop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_shop_badge"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    tools:src="@drawable/ic_badge_shop_official"
                    tools:visibility="visible" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Neutral_N700_96"
                    app:typographyType="heading_6"
                    tools:text="Loaa Store df" />

                <com.tokopedia.unifycomponents.Label
                    android:id="@+id/label_fulfillment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="Dilayani Tokopedia"
                    app:labelType="general_light_green" />
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/rl_product_policies_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toEndOf="@+id/cb_select_shop"
                android:layout_toRightOf="@+id/cb_select_shop"
                android:foregroundGravity="center_vertical"
                app:flexWrap="wrap">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_fulfill_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/light_N700_68"
                    app:typographyType="small"
                    app:typographyWeight="reguler"
                    tools:text="Tangerang Selatan" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/separator_pre_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="|"
                    android:textColor="@color/light_N700_68"
                    app:typographyType="small" />

                <com.tokopedia.unifycomponents.Label
                    android:id="@+id/label_pre_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:labelType="general_light_grey"
                    tools:labelTitle="Pre Order 8 Hari" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/separator_free_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:text="|"
                    android:textColor="@color/light_N700_68"
                    app:typographyType="small" />

                <ImageView
                    android:id="@+id/img_free_shipping"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:scaleType="fitStart"
                    tools:src="@color/unify_G500" />

            </com.google.android.flexbox.FlexboxLayout>

        </RelativeLayout>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
