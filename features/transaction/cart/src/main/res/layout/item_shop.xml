<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shop_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_warning_and_error"
        layout="@layout/layout_item_warning_and_error"
        tools:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_shop_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/cb_select_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cb_select_shop"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/image_shop_badge"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_marginEnd="4dp"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_badge_shop_official"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_shop_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="heading_6"
                tools:text="Loaa Store df" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/icon_pin"
                android:layout_width="@dimen/unify_space_16"
                android:layout_height="@dimen/unify_space_16"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/unify_space_12"
                app:icon_color_light_enable="@color/Unify_N700_96"
                app:icon_name="PUSH_PIN" />

        </LinearLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/rl_product_policies_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/cb_select_shop"
            android:foregroundGravity="center_vertical"
            app:flexWrap="wrap">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/iu_image_fulfill"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:scaleType="fitCenter"
                app:unify_image_corner_radius="0" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_fulfill_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="Tangerang Selatan" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/separator_estimated_time_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/label_separator_line"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_estimated_time_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="Estimasi Tiba: 2 Hari" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/separator_pre_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/label_separator_line"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="small" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/label_pre_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:labelType="general_light_grey"
                tools:labelTitle="Pre Order 8 Hari" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/separator_incident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/spacing_lvl2"
                android:paddingRight="@dimen/spacing_lvl2"
                android:text="@string/label_separator_line"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="small" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/label_incident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:labelType="general_light_grey"
                tools:labelTitle="This Is Incident Label" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/separator_free_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/spacing_lvl2"
                android:paddingRight="@dimen/spacing_lvl2"
                android:text="@string/label_separator_line"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="small" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/img_free_shipping"
                android:layout_width="@dimen/dp_100"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:scaleType="fitStart"
                tools:src="@color/Unify_G500" />

        </com.google.android.flexbox.FlexboxLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/separator_accordion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_accordion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_accordion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Lihat Selengkapnya" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/unify_chips_ic_chevron_selected" />

    </LinearLayout>


</LinearLayout>
