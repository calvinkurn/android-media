<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string"/>
    <attr name="icon_left" format="string"/>
    <attr name="icon_right" format="string"/>

    <declare-styleable name="BmGmWidgetView">
        <attr name="stateTicker" format="enum">
            <enum name="loading" value="0"/>
            <enum name="active" value="1"/>
            <enum name="inactive" value="2"/>
        </attr>
        <attr name="title"/>
        <attr name="icon_left"/>
        <attr name="icon_right"/>
    </declare-styleable>

    <declare-styleable name="CartSwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>

        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level"   value="1" />
        </attr>

        <attr name="flingVelocity" format="integer" />

        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>
</resources>