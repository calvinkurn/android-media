<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/text_field_input_promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_weight="1"
        app:text_field_label="Masukkan kode promo"
        app:text_field_label_static="false"
        app:text_field_input_type="text"
        app:text_field_placeholder="Masukkan kode promo" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button_apply_promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Terapkan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_field_input_promo"
        app:layout_constraintTop_toTopOf="parent"
        app:unifyButtonVariant="filled" />

</LinearLayout>