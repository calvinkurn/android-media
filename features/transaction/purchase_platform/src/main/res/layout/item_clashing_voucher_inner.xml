<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:orientation="vertical">

    <View
        android:id="@+id/holder_item_cart_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@color/unify_N75" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="#e131353b"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        tools:text="@string/clash_bottomsheet_previous_potential_promo_origin2" />

    <TextView
        android:id="@+id/tv_cashback_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_6"
        android:lineSpacingExtra="@dimen/sp_8"
        android:textColor="@color/Neutral_N700_68"
        android:textSize="@dimen/sp_10"
        tools:text="@string/clash_bottomsheet_previous_potential_promo_desc2" />

</LinearLayout>