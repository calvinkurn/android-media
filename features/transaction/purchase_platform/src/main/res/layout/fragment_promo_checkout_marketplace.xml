<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/layout_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/container_action_bottom"
        android:layout_below="@+id/app_bar_layout"
        android:background="@color/checkout_module_color_background">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/header_promo_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_12">

                <ImageView
                    android:id="@+id/section_image_promo_list_header"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_badge_shop_official" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/section_label_promo_list_header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:ellipsize="end"
                    android:text="Kupon saya 111"
                    app:layout_constraintStart_toEndOf="@+id/section_image_promo_list_header"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typographyType="body_2"
                    app:typographyWeight="bold" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/section_label_promo_list_header_sub_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="Hanya bisa pilih satu aja"
                    app:layout_constraintStart_toEndOf="@+id/section_image_promo_list_header"
                    app:layout_constraintTop_toBottomOf="@+id/section_label_promo_list_header_title"
                    app:typographyType="body_3" />

                <ImageView
                    android:id="@+id/section_image_chevron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/unify_chips_ic_chevron_normal" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/v_shadow_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_4"
                android:layout_gravity="top"
                android:background="@drawable/shadow_bottom" />

        </LinearLayout>

        <View
            android:id="@+id/v_shadow_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_sheet_shadow" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_action_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16"
        android:visibility="gone"
        tools:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_total_promo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center_vertical"
            android:text="Kamu bisa hemat"
            android:textColor="@color/clr_ae31353b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_total_promo_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="Rp66.000"
            android:textColor="@color/clr_f531353b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:typographyType="heading_4"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_apply_promo"
            android:layout_width="@dimen/dp_153"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:text="Pakai Promo (3)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyButtonVariant="filled" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_apply_no_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:text="Belanja Tanpa Promo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyButtonVariant="filled"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/layout_global_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_layout"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="gone" />

</RelativeLayout>