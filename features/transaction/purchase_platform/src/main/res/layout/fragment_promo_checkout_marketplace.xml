<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom_action_container"
        android:background="@color/checkout_module_color_background">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/v_shadow_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_4"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_sheet_shadow" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/rl_bottom_action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16"
        android:visibility="visible"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_total_payment_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Kamu bisa hemat"
                app:typographyType="body_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_total_payment_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp66.000"
                app:typographyType="heading_3"
                app:typographyWeight="bold" />

        </LinearLayout>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_apply_promo"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:text="Pakai Promo (3)"
            app:layout_constraintEnd_toEndOf="parent"
            app:unifyButtonVariant="filled" />

    </LinearLayout>


</RelativeLayout>