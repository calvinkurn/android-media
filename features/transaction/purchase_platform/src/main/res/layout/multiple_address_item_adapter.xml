<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingStart="@dimen/dp_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/shipping_index"
            style="@style/TextMidMediumBlack70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3sp"
            android:text="@string/label_shipment_counter"
            tools:ignore="RelativeOverlap"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                app:srcCompat="@drawable/ic_delete_cart"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/address_layout"
        layout="@layout/item_recipient_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_change_recipient_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingBottom="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_4"
        android:text="@string/label_change_address"
        android:textColor="@color/tkpd_main_green"
        app:typographyType="body_3"
        app:typographyWeight="reguler"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="true">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_label_note_for_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_note_for_seller"
            android:visibility="gone"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_btn_show_notes_for_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_toEndOf="@id/tv_label_note_for_seller"
            android:layout_toRightOf="@id/tv_label_note_for_seller"
            android:text="@string/label_button_add_note"
            android:textColor="@color/tkpd_main_green"
            android:visibility="gone"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_notes_for_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_label_note_for_seller"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:hint="@string/label_note_for_seller"
            android:imeActionLabel="Selesai"
            android:imeOptions="actionDone"
            android:maxLines="3"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:textColor="@color/black_70"
            android:textColorHighlight="@color/tkpd_main_green"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:backgroundTint="@color/tkpd_main_green"
            tools:ignore="TextFields" />

        <View
            android:id="@+id/v_notes_separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/et_notes_for_seller"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/grey_300" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_error_form_remark_validation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/v_notes_separator"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_4"
            android:paddingStart="@dimen/dp_4"
            android:textColor="@color/text_cart_item_error_red"
            android:visibility="gone"
            tools:ignore="RtlSymmetry,SmallSp"
            tools:text="Maksimal 2 broh"
            tools:visibility="gone"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_error_note_validation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/v_notes_separator"
            android:maxLines="2"
            android:textColor="@color/text_cart_item_error_red"
            android:visibility="gone"
            tools:ignore="SmallSp"
            tools:text="Maksimal 2 broh"
            tools:visibility="visible"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_note_char_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/v_notes_separator"
            android:lineSpacingExtra="0sp"
            tools:text="60/140"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_total"
            app:typographyType="body_2"
            app:typographyWeight="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btn_qty_min"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    app:srcCompat="@drawable/bg_button_counter_minus_checkout" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_qty"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/black_70"
                    android:textColorHighlight="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_16"
                    app:backgroundTint="@color/tkpd_main_green"
                    tools:text="10000" />

                <ImageView
                    android:id="@+id/btn_qty_plus"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    app:srcCompat="@drawable/bg_button_counter_plus_checkout"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_error_qty_validation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_cart_item_error_red"
                android:visibility="gone"
                tools:ignore="SmallSp"
                tools:text="Maksimal 2 broh"
                tools:visibility="visible"
                app:typographyType="body_3"
                app:typographyWeight="reguler"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/border_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/grey_300"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>