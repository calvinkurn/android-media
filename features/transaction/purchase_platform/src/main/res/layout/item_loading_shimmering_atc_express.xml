<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:visibility="visible">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/img_product"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            app:corners="20" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toEndOf="@+id/img_product"
            android:layout_toRightOf="@+id/img_product"
            app:corners="20" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_product_price"
            android:layout_width="@dimen/dp_64"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toEndOf="@+id/img_product"
            android:layout_toRightOf="@+id/img_product"
            app:corners="20" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_profile_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_8">

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/tv_profile_address_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_2"
                    app:corners="20" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/img_profile_payment_method"
                        android:layout_width="@dimen/dp_160"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_4"
                        app:corners="20" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/v_profile_separator_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/bg_line_separator" />

        <LinearLayout
            android:id="@+id/ll_profile_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/tv_profile_shipping_duration_value"
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_16"
                app:corners="20" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_profile_courier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/tv_profile_shipping_courier_value"
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_16"
                app:corners="20" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="horizontal">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_16"
                app:corners="20" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/btn_qty_min"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        app:corners="20" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/et_qty"
                        android:layout_width="@dimen/dp_64"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        app:corners="20" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/btn_qty_plus"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        app:corners="20" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/bg_line_separator" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/cb_insurance"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_4"
                app:corners="20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:layout_width="@dimen/dp_96"
                        android:layout_height="@dimen/dp_16"
                        app:corners="20" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.elyeproj.loaderviewlibrary.LoaderTextView
                        android:id="@+id/tv_insurance_price"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_16"
                        app:corners="20" />

                </LinearLayout>

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:id="@+id/tv_insurance_short_info"
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    app:corners="20" />

            </LinearLayout>

        </LinearLayout>

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            app:corners="20" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:visibility="visible">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_purchase_summary_title"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_8"
            app:corners="20" />

        <View
            android:id="@+id/v_purchase_summary_separator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/tv_purchase_summary_title"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/bg_line_separator" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_purchase_summary_item_price_label"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@+id/v_purchase_summary_separator"
            android:layout_marginBottom="@dimen/dp_8"
            app:corners="20" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_purchase_summary_shipping_price_label"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@+id/tv_purchase_summary_item_price_label"
            android:layout_marginBottom="@dimen/dp_8"
            app:corners="20" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_purchase_summary_service_price_label"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@+id/tv_purchase_summary_shipping_price_label"
            android:layout_marginBottom="@dimen/dp_8"
            app:corners="20" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tv_purchase_summary_insurance_price_label"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@+id/tv_purchase_summary_service_price_label"
            app:corners="20" />

    </RelativeLayout>

</LinearLayout>