<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_26"
    android:layout_marginBottom="@dimen/dp_12"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="@color/clr_ae31353b"
        app:typographyType="body_3"
        tools:text="Nama Lengkap (Sesuai KTP)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:drawableRight="@drawable/ic_arrow_drop_down_grey_checkout_module"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="@color/clr_f531353b"
        app:typographyType="body_2"
        tools:text="Andrew Ignatius Sugijanto" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_300" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="end"
        android:textColor="@color/red_500"
        android:textStyle="normal"
        android:visibility="invisible"
        app:typographyType="body_3"
        tools:visibility="visible" />

</LinearLayout>