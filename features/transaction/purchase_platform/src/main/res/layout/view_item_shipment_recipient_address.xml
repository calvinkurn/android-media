<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_shipment_recipient_address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipment_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="@string/label_showcase_address_title"
        app:typographyType="heading_3" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_shipment_address"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/separator_color" />

    <com.tokopedia.unifycomponents.TabsUnify
        android:id="@+id/tab_unify_trade_in_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        tools:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_image_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_unify_trade_in_address"
        android:background="@color/white"
        android:padding="@dimen/dp_16">

        <LinearLayout
            android:id="@+id/rl_detail_shipment_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/layout_address_normal"
                layout="@layout/layout_address_normal"
                tools:visibility="gone" />

            <include
                android:id="@+id/layout_address_drop_off"
                layout="@layout/layout_address_drop_off"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_trade_in_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_detail_shipment_recipient"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/bg_trade_in_address_info"
            android:orientation="horizontal"
            android:padding="@dimen/dp_8">

            <ImageView
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                app:srcCompat="@drawable/ic_info_trade_in" />

            <TextView
                android:id="@+id/tv_trade_in_info"
                style="@style/TextSmallNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:clickable="true"
                android:text="@string/message_trade_in_checkout_delivery_info" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_add_or_change_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_image_address_container"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_send_to_multiple_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@drawable/bg_green_round_address"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="@string/label_button_send_to_multiple_address"
            android:textColor="@color/address_green"
            app:typographyType="heading_6"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_change_recipient_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@drawable/bg_green_round_address"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:text="@string/label_button_change_address_new"
            android:textColor="@color/address_green"
            app:typographyType="heading_6"
            app:typographyWeight="bold" />

    </LinearLayout>

</RelativeLayout>