<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_address_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_location_state"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/address_detail"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_18"
            app:srcCompat="@drawable/ic_pin_map_address"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_toStartOf="@+id/lbl_main_address"
            android:layout_toLeftOf="@+id/lbl_main_address"
            android:singleLine="true"
            android:text="@string/text_address_type"
            android:textColor="@color/Neutral_N700_96"
            android:textSize="@dimen/sp_16"
            app:typographyType="body_1"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_main_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/address_type"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toStartOf="@+id/item_address_radio"
            android:layout_toLeftOf="@+id/item_address_radio"
            android:text="@string/label_main_address"
            app:labelType="general_dark_blue" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_type"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_toStartOf="@+id/item_address_radio"
            android:layout_toLeftOf="@+id/item_address_radio"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:text="@string/text_address_name"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_name"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toStartOf="@+id/item_address_radio"
            android:layout_toLeftOf="@+id/item_address_radio"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:text="@string/text_address_number"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_number"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_toStartOf="@+id/item_address_radio"
            android:layout_toLeftOf="@+id/item_address_radio"
            android:text="@string/text_detail_address"
            android:textColor="@color/Neutral_N700_68"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_pinpoint_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_location_state"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toEndOf="@+id/img_location_state"
            android:layout_toRightOf="@id/img_location_state"
            android:gravity="center_vertical"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="body_3"
            tools:text="Sudah Pin Point" />


        <RadioButton
            android:id="@+id/item_address_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:clickable="false"
            android:focusable="true"
            android:theme="@style/TransactionToggleButton" />

    </RelativeLayout>

</com.tokopedia.unifycomponents.CardUnify>


