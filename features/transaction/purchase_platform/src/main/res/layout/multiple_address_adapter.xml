<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/checkout_module_color_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dp_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_8"
                tools:text="Adidas sjdbgjk sdjgbjksd jsdgk"
                android:textColor="@color/text_black"
                app:typographyType="body_2"
                app:typographyWeight="reguler"/>

            <ImageView
                android:id="@+id/img_shop_badge"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                tools:src="@drawable/ic_badge_official" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sender_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tangerang Selatan"
            android:textColor="@color/subtext_black"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            app:typographyType="small"
            app:typographyWeight="reguler"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_product_card"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                app:cardCornerRadius="6dp"
                app:cardElevation="@dimen/dp_0"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="@dimen/dp_52"
                    android:layout_height="@dimen/dp_52"
                    tools:src="@drawable/empty_photo" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:orientation="vertical">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    app:typographyType="body_2"
                    app:typographyWeight="bold"
                    tools:text="Kaos Adidas Camo Tongue Tee... White and Red, XS" />

                <include
                    layout="@layout/layout_cart_item_policy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_4" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/price_label"
                    app:typographyType="body_2"
                    app:typographyWeight="bold"
                    tools:text="Rp 20.000" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shipping_destination_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/grey_300" />

        <Button
            android:id="@+id/bt_add_new_shipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="sans-serif-medium"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/dp_16"
            android:text="@string/label_add_new_shipment_new"
            android:textAllCaps="false"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</LinearLayout>