<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:lines="1"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Alamat" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_address_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_address_name"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Buat alamat baru atau gunakan lokasi saat ini" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/Neutral_N75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_address_detail" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shipping_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Jenis Pengiriman" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shipping_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintEnd_toEndOf="@+id/tv_shipping_name"
            app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_shipping_name"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Pilih pengiriman yang pas dengan kebutuhanmu" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/Neutral_N75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shipping_duration" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_payment_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:lines="1"
            android:paddingBottom="@dimen/dp_2"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Metode Pembayaran" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_payment_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintEnd_toEndOf="@+id/tv_payment_name"
            app:layout_constraintStart_toStartOf="@+id/tv_payment_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_name"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Pilih metode bayar yang paling sering kamu pakai" />

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/Neutral_N75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_detail" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_choose_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingStart="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_12"
            android:text="Atur Pilihan"
            android:textColor="@color/Green_G500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>