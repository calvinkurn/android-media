<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="@dimen/dp_64"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_empty_state"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/green_200" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_empty_state_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:text="Ayo verifikasi nomor HP kamu!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_empty_state"
            app:typographyType="heading_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_empty_state_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:text="Supaya bisa gunakan berbagai promo menarik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_empty_state_title"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_action"
            android:layout_width="@dimen/dp_153"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:foreground="?selectableItemBackground"
            android:text="Pakai Promo (3)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_empty_state_sub_title"
            app:unifyButtonVariant="filled" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>