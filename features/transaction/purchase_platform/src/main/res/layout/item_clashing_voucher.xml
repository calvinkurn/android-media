<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_12"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12">

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:id="@+id/rb_option_clash"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_voucher_amount_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_toEndOf="@id/rb_option_clash"
            android:layout_toRightOf="@id/rb_option_clash"
            android:text="@string/clash_bottomsheet_previous_potential_promo"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="heading_6" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_voucher_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_voucher_amount_total"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_toEndOf="@id/rb_option_clash"
            android:layout_toRightOf="@id/rb_option_clash" />

    </RelativeLayout>

</com.tokopedia.unifycomponents.CardUnify>