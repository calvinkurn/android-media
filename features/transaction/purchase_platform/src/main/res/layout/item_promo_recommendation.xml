<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_promo_recommendation"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_8">

        <ImageView
            android:id="@+id/image_check_promo_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_check" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_promo_recommendation_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Ada 3 promo terbaik untukmu"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/button_apply_promo"
            app:layout_constraintStart_toEndOf="@+id/image_check_promo_recommendation"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_promo_recommendation_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kamu bisa hemat Rp45.000"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/button_apply_promo"
            app:layout_constraintStart_toEndOf="@+id/image_check_promo_recommendation"
            app:layout_constraintTop_toBottomOf="@+id/label_promo_recommendation_title"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_apply_promo_recommendation"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:foreground="?selectableItemBackground"
            android:text="Pilih"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unifyButtonInvers="true"
            app:unifyButtonSize="medium"
            app:unifyButtonVariant="ghost" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>