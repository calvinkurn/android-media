<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shop_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_warning_and_error"
        layout="@layout/layout_item_warning_and_error" />

    <FrameLayout
        android:id="@+id/fl_shop_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1">

        <RelativeLayout
            android:id="@+id/rl_shop_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:paddingLeft="@dimen/dp_9"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_10">

            <CheckBox
                android:id="@+id/cb_select_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_8"
                android:paddingRight="@dimen/dp_12"
                android:button="@drawable/ic_cart_check_box" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cb_select_shop"
                android:layout_alignBottom="@+id/cb_select_shop"
                android:layout_toEndOf="@+id/cb_select_shop"
                android:layout_toRightOf="@id/cb_select_shop"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_shop_badge"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    tools:src="@drawable/ic_badge_shop_official"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/img_shop_fulfill"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_logistic_logistic_fulfillment_normal_16" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Loaa Store df"
                    android:textColor="@color/text_black"
                    app:typographyType="body_2"
                    app:typographyWeight="bold"/>

            </LinearLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_fulfill_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_toEndOf="@+id/cb_select_shop"
                android:layout_toRightOf="@+id/cb_select_shop"
                tools:text="Tangerang Selatan"
                android:textColor="@color/subtext_black"
                app:typographyType="small"
                app:typographyWeight="reguler"/>

        </RelativeLayout>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
