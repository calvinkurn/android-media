<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shipment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_courier_state_loading"
        layout="@layout/partial_shimmering_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16" />

    <LinearLayout
        android:id="@+id/ll_shipment_option_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_text_shipment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="@string/label_courier"
            app:typographyType="body_2"
            app:typographyWeight="reguler"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/choose_courier_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/transaction_checkout_green_button_rounded_unify"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_27"
            android:paddingTop="@dimen/dp_9"
            android:text="@string/label_button_choose_courier"
            android:textColor="@color/white"
            app:typographyType="body_2"
            app:typographyWeight="reguler"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_selected_courier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_shipmping_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_4">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_shipping_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/sp_4"
                        tools:text="Next Day"
                        app:typographyType="body_2"
                        app:typographyWeight="reguler"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_shipping_etd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        tools:text="(1-2 Hari Kerja)"
                        app:typographyType="body_2"
                        app:typographyWeight="reguler"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_courier_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/sp_4"
                        tools:text="JNE Reg (Reguler)"
                        app:typographyType="body_3"
                        app:typographyWeight="reguler"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_dash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:text="-"
                        app:typographyType="body_3"
                        app:typographyWeight="reguler"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_courier_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp 10.000"
                        app:typographyType="body_3"
                        app:typographyWeight="reguler"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_change_courier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="@dimen/dp_16"
                android:text="@string/label_change_courier"
                android:textColor="@color/medium_green"
                app:typographyType="body_2"
                app:typographyWeight="reguler"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/grey_300" />

</LinearLayout>