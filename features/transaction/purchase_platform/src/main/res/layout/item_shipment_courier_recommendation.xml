<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shipment_recommendation_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_courier_recommendation_state_loading"
        layout="@layout/purchase_platform_partial_shimmering_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16" />

    <com.tokopedia.promocheckout.common.view.widget.TickerPromoStackingCheckoutView
        android:id="@+id/ticker_promo_logistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:layout_height="50dp" />

    <LinearLayout
        android:id="@+id/ll_select_shipment_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:text="@string/label_shipping_duration"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_choose_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/transaction_checkout_green_button_rounded_unify_new"
            android:foreground="?selectableItemBackground"
            android:paddingLeft="@dimen/dp_27"
            android:paddingTop="@dimen/dp_9"
            android:paddingRight="@dimen/dp_27"
            android:paddingBottom="@dimen/dp_9"
            android:text="@string/label_button_choose_courier_recommendation"
            android:textColor="@color/white"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_selected_shipment_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_selected_duration_recommendation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_4">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16">

                <TextView
                    android:id="@+id/tv_selected_duration_recommendation"
                    style="@style/TextMidMediumBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8 jam" />

                <TextView
                    android:id="@+id/tv_duration_benefit_striked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_disabled"
                    android:layout_below="@+id/tv_selected_duration_recommendation"
                    tools:text="Rp 10.000"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/tv_duration_discounted_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_selected_duration_recommendation"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toEndOf="@+id/tv_duration_benefit_striked"
                    android:layout_toRightOf="@+id/tv_duration_benefit_striked"
                    tools:text="Rp 3.000"
                    tools:visibility="gone" />

            </RelativeLayout>


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_change_selected_duration"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/bg_green_round_address"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_9"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_9"
                android:text="@string/label_button_change_shipping_duration"
                android:textColor="@color/address_green"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/selected_courier_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16">

                <TextView
                    android:id="@+id/tv_selected_courier_recommendation"
                    style="@style/TextMidMediumBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Grab Parcel" />

                <TextView
                    android:id="@+id/tv_selected_price_recommendation"
                    style="@style/TextSmallNormalBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp20.000" />

                <TextView
                    android:id="@+id/tv_selected_price_b"
                    style="@style/TextMidMediumBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp20.000"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/tv_button_change_courier"
                    style="@style/TextSmallNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_button_change_courier_recommendation"
                    android:textColor="@color/tkpd_main_green" />

            </LinearLayout>

        </LinearLayout>

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/ticker_otd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            app:closeButtonVisibility="gone"
            app:tickerShapeType="loose"
            app:tickerType="announcement"
            tools:layout_height="50dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/grey_300" />

</LinearLayout>