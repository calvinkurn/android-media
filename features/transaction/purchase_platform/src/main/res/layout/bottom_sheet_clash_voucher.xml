<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/dp_3">

        <LinearLayout
            android:id="@+id/header_product_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/tv_clashing_info_ticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_12"
                app:closeButtonVisibility="gone"
                app:tickerShapeType="loose"
                app:tickerType="warning"
                tools:descriptionText="@string/clash_bottomsheet_info_warning_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:text="@string/clash_bottomsheet_subtitle_new"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_clashing_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/v_shadow_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_gravity="bottom"
                android:background="@drawable/bottom_sheet_shadow"
                android:visibility="gone" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_12"
                android:foreground="?selectableItemBackground"
                android:text="@string/clash_bottomsheet_submit"
                android:textAllCaps="false"
                app:unifyButtonSize="large"
                app:unifyButtonType="main" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>