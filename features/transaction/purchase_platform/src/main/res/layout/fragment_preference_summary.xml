<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_preference_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:lines="1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        tools:text="Preferensi Utama"
        tools:visibility="gone" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:lines="1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_preference_name"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Kantor asdf asd f" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_address_receiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toStartOf="@+id/btn_change_address"
        app:layout_constraintStart_toEndOf="@+id/tv_address_name"
        app:layout_constraintTop_toTopOf="@+id/tv_address_name"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="- Tari (08xxxxxxxxxxxx)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_address_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_name"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="tokopedia tower lantai asdfl jalan lasdfj lajsdf lkasjdf lj" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/btn_change_address"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:textColor="@color/Green_G500"
        app:layout_constraintBottom_toBottomOf="@+id/tv_address_receiver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_address_receiver"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Ubah" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/Neutral_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_detail" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:lines="1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toStartOf="@+id/btn_change_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="pengiriman instan" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="@+id/tv_shipping_name"
        app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_name"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="durasi 3 jam" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/btn_change_duration"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:textColor="@color/Green_G500"
        app:layout_constraintBottom_toBottomOf="@+id/tv_shipping_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_shipping_name"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Ubah" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/Neutral_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_duration" />

    <ImageView
        android:id="@+id/iv_payment"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_14"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/tv_payment_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        tools:ignore="ContentDescription"
        tools:srcCompat="@drawable/ic_delete_cart" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_payment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_16"
        android:lines="1"
        android:paddingBottom="@dimen/dp_2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toStartOf="@+id/btn_change_payment"
        app:layout_constraintStart_toEndOf="@+id/iv_payment"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Virtual Account" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_payment_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="@+id/tv_payment_name"
        app:layout_constraintStart_toStartOf="@+id/tv_payment_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_name"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="8098097230948209384" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/btn_change_payment"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:textColor="@color/Green_G500"
        app:layout_constraintBottom_toBottomOf="@+id/tv_payment_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_payment_name"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Ubah" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_payment_detail"
        app:layout_constraintVertical_bias="1"
        tools:text="Simpan Preferensi" />

</androidx.constraintlayout.widget.ConstraintLayout>