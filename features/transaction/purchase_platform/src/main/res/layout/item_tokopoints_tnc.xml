<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_11"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_11">

    <ImageView
        android:id="@+id/image_tnc_item"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_icon_alert" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_tnc_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_tnc_item"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="TokoPoints bisa didapatkan dari seluruh atau sisa tagihan yang dibayar tidak menggunakan potongan TokoPoints" />

</androidx.constraintlayout.widget.ConstraintLayout>