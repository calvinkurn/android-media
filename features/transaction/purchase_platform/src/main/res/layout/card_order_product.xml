<!--        app:layout_constraintStart_toStartOf="@+id/iv_product_image"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/tv_product_price" />-->

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_quantity_stock_available"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/btn_qty_min"
        app:layout_constraintEnd_toStartOf="@+id/btn_qty_min"
        app:layout_constraintStart_toStartOf="@+id/iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        app:typographyType="body_3"
        tools:text="Stok terbatas! Tersedia &lt; 5" />

    <ImageView
        android:id="@+id/btn_qty_min"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="@dimen/dp_2"
        app:layout_constraintEnd_toStartOf="@+id/et_qty"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        app:srcCompat="@drawable/bg_button_counter_minus_checkout_enabled"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_qty"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/black_70"
        android:textColorHighlight="@color/tkpd_main_green"
        android:textSize="@dimen/sp_16"
        app:backgroundTint="@color/tkpd_main_green"
        app:layout_constraintBottom_toBottomOf="@+id/btn_qty_plus"
        app:layout_constraintEnd_toStartOf="@+id/btn_qty_plus"
        app:layout_constraintTop_toTopOf="@+id/btn_qty_plus"
        tools:text="10000" />

    <ImageView
        android:id="@+id/btn_qty_plus"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:padding="@dimen/dp_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        app:srcCompat="@drawable/bg_button_counter_plus_checkout_enabled"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_error_form_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="end"
        android:maxLines="2"
        android:textAlignment="gravity"
        android:textColor="@color/text_error_red_2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_qty_plus"
        app:typographyType="small"
        tools:text="Maksimal 2 broh hjadjf askjbfk kjabfdk ashfb aksbfkabsf "
        tools:visibility="visible" />

