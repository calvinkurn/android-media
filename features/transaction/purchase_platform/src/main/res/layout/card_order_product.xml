<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/label_toko"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toStartOf="@+id/label_error"
        app:layout_constraintStart_toEndOf="@+id/tv_shop"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Toko Sepeda A" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:maxWidth="@dimen/dp_120"
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="gone"
        app:labelType="general_dark_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        tools:labelTitle="Bukan barang testing" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Neutral_N700_44"
        app:layout_constraintEnd_toEndOf="@+id/tv_shop_name"
        app:layout_constraintStart_toStartOf="@+id/tv_shop"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop"
        app:typographyType="small"
        app:typographyWeight="reguler"
        tools:text="Jakarta" />

    <com.tokopedia.design.image.RoundedCornerImageView
        android:id="@+id/iv_product_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tv_shop_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop_location" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_image"
        app:layout_constraintTop_toTopOf="@+id/iv_product_image"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Sepeda Bagus Sekali" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp 1.000.000" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/lbl_cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        app:labelTitle="@string/label_cashback"
        app:labelType="general_light_green"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_price"
        app:layout_constraintStart_toEndOf="@id/tv_product_price"
        app:layout_constraintTop_toTopOf="@id/tv_product_price" />

    <ImageView
        android:id="@+id/iv_free_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/lbl_cashback"
        app:layout_constraintTop_toTopOf="@id/tv_product_price"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_close_default" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_quantity_stock_available"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/btn_qty_min"
        app:layout_constraintEnd_toStartOf="@+id/btn_qty_min"
        app:layout_constraintStart_toStartOf="@+id/iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        app:typographyType="body_3"
        tools:text="Stok terbatas! Tersedia &lt; 5" />

    <ImageView
        android:id="@+id/btn_qty_min"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="@dimen/dp_2"
        app:layout_constraintEnd_toStartOf="@+id/et_qty"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        app:srcCompat="@drawable/bg_button_counter_minus_checkout_enabled"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_qty"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/black_70"
        android:textColorHighlight="@color/tkpd_main_green"
        android:textSize="@dimen/sp_16"
        app:backgroundTint="@color/tkpd_main_green"
        app:layout_constraintBottom_toBottomOf="@+id/btn_qty_plus"
        app:layout_constraintEnd_toStartOf="@+id/btn_qty_plus"
        app:layout_constraintTop_toTopOf="@+id/btn_qty_plus"
        tools:text="10000" />

    <ImageView
        android:id="@+id/btn_qty_plus"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:padding="@dimen/dp_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        app:srcCompat="@drawable/bg_button_counter_plus_checkout_enabled"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_error_form_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="end"
        android:maxLines="2"
        android:textAlignment="gravity"
        android:textColor="@color/text_error_red_2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_qty_plus"
        app:typographyType="small"
        tools:text="Maksimal 2 broh hjadjf askjbfk kjabfdk ashfb aksbfkabsf "
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_note_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/label_note_for_seller"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_error_form_validation"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:maxLines="3"
        android:overScrollMode="always"
        android:paddingBottom="@dimen/dp_16"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textColor="@color/black_70"
        android:textColorHighlight="@color/tkpd_main_green"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:backgroundTint="@color/tkpd_main_green"
        app:layout_constraintEnd_toEndOf="@+id/tv_note_label"
        app:layout_constraintStart_toStartOf="@+id/tv_note_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_note_label"
        tools:ignore="TextFields"
        tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim barangnya gan!" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_note_char_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:layout_constraintEnd_toEndOf="@+id/et_note"
        app:layout_constraintTop_toBottomOf="@+id/et_note"
        app:typographyType="small"
        tools:text="60/140"
        tools:visibility="visible" />

</merge>