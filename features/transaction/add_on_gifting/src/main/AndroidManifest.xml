<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.addongifting">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.tokopedia.addongifting.AddOnActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/add_on_gifting_activity_add_on_label"
            android:theme="@style/Theme.AppCompat.DayNight.Translucent">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_add_on_gifting"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.addongifting.addongallery.AddOnGalleryActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/add_on_gifting_activity_add_on_gallery_label"
            android:theme="@style/Theme.WhiteUnify"/>
    </application>

</manifest>