<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.image_gallery.ImageGallery
        android:id="@+id/image_gallery_add_on"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/button_close"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="20dp"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="CLOSE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="28dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_add_on_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_Static_White"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Kartu Ucapan" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_add_on_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_Static_White"
            app:typographyType="body_3"
            tools:text="Rp10.000" />

    </LinearLayout>

</FrameLayout>