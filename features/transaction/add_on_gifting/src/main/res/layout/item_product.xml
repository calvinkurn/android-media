<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="16dp"
    android:layout_height="wrap_content">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_shop"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        app:icon_name="SHOP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/label_header_message" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_header_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_shop"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="Disediakan oleh Tokopedia" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_promo"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:icon_name="PROMO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_shop" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_shop"
        app:layout_constraintTop_toTopOf="@+id/icon_promo"
        app:typographyType="body_3"
        tools:text="Disediakan oleh Tokopedia" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_product"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_promo_info" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_product"
        app:layout_constraintTop_toTopOf="@+id/image_product"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Hampers Spesial Ucapan Selamat Ulang Tahun Tokopedia" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_product_quantity_and_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/label_product_name"
        app:layout_constraintTop_toBottomOf="@+id/label_product_name"
        app:typographyType="body_3"
        tools:text="Rp10.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_other_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/image_product"
        app:layout_constraintTop_toBottomOf="@+id/label_product_quantity_and_price"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="+3 barang lainnya" />

</androidx.constraintlayout.widget.ConstraintLayout>