<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/descPromo"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_marginBottom="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Waktunya Kulineran! Beli Voucher Makannya, Cashback hingga Rp20â€¦" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@drawable/ic_voucher_promo" />

            <TextView
                style="@style/TextView.Micro.BlackSecondary"
                android:layout_marginRight="@dimen/dp_5"
                android:text="@string/promo_label_promo_code" />

            <TextView
                android:id="@+id/voucherCode"
                style="@style/TextView.Micro.Orange.Bold"
                tools:text="VOUCHER HEMAT" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
