<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:elevation="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.promocheckout.list.widget.PromoImageView
            android:id="@+id/imageBannerPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_16">

                <ImageView
                    android:id="@+id/imagePeriod"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/ic_period_promo_green" />

                <TextView
                    android:id="@+id/title_period"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_toRightOf="@+id/imagePeriod"
                    android:text="@string/promo_title_period" />

                <TextView
                    android:id="@+id/textPeriod"
                    style="@style/TextView.Micro.Bold"
                    android:layout_below="@+id/title_period"
                    android:layout_toRightOf="@+id/imagePeriod"
                    tools:text="16 Agu 2018" />
            </RelativeLayout>

            <RelativeLayout
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_16">

                <ImageView
                    android:id="@+id/imageMinTrans"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/ic_period_promo_green" />

                <TextView
                    android:id="@+id/titleMinTrans"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_toRightOf="@+id/imageMinTrans"
                    android:text="@string/promo_label_min_transaction" />

                <TextView
                    android:id="@+id/textMinTrans"
                    style="@style/TextView.Micro.Bold"
                    android:layout_below="@+id/titleMinTrans"
                    android:layout_toRightOf="@+id/imageMinTrans"
                    tools:text="Rp. 100.000" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
