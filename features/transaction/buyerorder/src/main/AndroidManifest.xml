<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.buyerorder">

    <application>
        <activity android:name=".detail.view.activity.SeeInvoiceActivity"
            android:screenOrientation="portrait"
            android:configChanges="uiMode"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_order"
                    android:path="@string/path_invoice"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".detail.view.activity.RequestCancelActivity"
            android:label="@string/title_activity_people_reason"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".detail.view.activity.OrderListwebViewActivity"
            android:screenOrientation="portrait"
            android:configChanges="uiMode"
            android:theme="@style/Theme.White"/>

        <activity
            android:name=".detail.view.activity.OrderListDetailActivity"
            android:label="@string/title_order_detail"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".list.view.activity.OrderListActivity"
            android:label="@string/title_order_list"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" >

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_transaction"
                    android:path="@string/path_order_list"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".list.view.activity.SellerOrderListActivity"
            android:label="@string/title_order_list"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Toolbar.White" />

        <activity
            android:name=".detail.view.activity.BuyerRequestCancelActivity"
            android:label="@string/title_buyer_request_cancel"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name="com.tokopedia.buyerorder.unifiedhistory.list.view.activity.UohListActivity"
            android:label="@string/title_uoh_list"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_order"
                    android:path="@string/path_order_unified"/>

            </intent-filter>
        </activity>

    </application>

</manifest>
