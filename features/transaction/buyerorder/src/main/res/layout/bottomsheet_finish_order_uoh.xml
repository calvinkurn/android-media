<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_20">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/finish_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/uoh_finish_order_desc"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:textColor="@color/light_N700_96"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/finish_detail_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/finish_desc"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/uoh_finish_order_1"
        android:layout_marginTop="@dimen/dp_20"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:textColor="@color/light_N700_96"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/finish_detail_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/finish_detail_1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/uoh_finish_order_2"
        android:layout_marginTop="@dimen/dp_20"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:textColor="@color/light_N700_96"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_ajukan_komplain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_ajukan_komplain"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:unifyButtonVariant="ghost"
        app:layout_constraintTop_toBottomOf="@id/finish_detail_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_finish_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_finish_order"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/finish_detail_2"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"/>

</androidx.constraintlayout.widget.ConstraintLayout>