<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/store_name_placeholder"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginTop="@dimen/dp_16"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_store_name"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="@string/invoice_placeholder"
        android:textColor="@color/black_38"/>
    
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_invoice"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/Neutral_N75"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_product_img"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/cv_product_img"
        app:typographyWeight="bold"
        android:textColor="@color/Neutral_N700_96"
        tools:text="@string/product_name_placeholder"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cv_product_img"
        app:layout_constraintTop_toBottomOf="@id/label_product_name"
        android:layout_marginTop="@dimen/dp_1"
        android:textColor="@color/Yellow_Y500"
        tools:text="@string/product_price_placeholder"
        app:typographyWeight="bold"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"/>

</androidx.constraintlayout.widget.ConstraintLayout>