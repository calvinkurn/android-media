<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/store_name_placeholder"
        android:text="@string/store_name_placeholder"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_shop_name"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="@string/invoice_placeholder"
        android:text="@string/invoice_placeholder"
        android:textColor="@color/black_38"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"/>
    
    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_invoice"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/Neutral_N75"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_product_img"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_1"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider_1"
        app:layout_constraintStart_toEndOf="@id/cv_product_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyWeight="bold"
        android:textColor="@color/Neutral_N700_96"
        tools:text="@string/product_name_placeholder"
        android:text="@string/product_name_placeholder"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cv_product_img"
        app:layout_constraintTop_toBottomOf="@id/label_product_name"
        android:layout_marginTop="@dimen/dp_1"
        android:textColor="@color/Yellow_Y500"
        tools:text="@string/product_price_placeholder"
        android:text="@string/product_price_placeholder"
        app:typographyWeight="bold"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_see_all_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_price"
        app:layout_constraintStart_toEndOf="@id/cv_product_img"
        android:layout_marginTop="@dimen/dp_8"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:textColor="@color/Green_G500"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        tools:visibility="visible"
        tools:text="@string/see_all_placeholder"
        android:text="@string/see_all_placeholder"/>

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/Neutral_N50"
        app:layout_constraintTop_toBottomOf="@id/label_see_all_products"
        android:layout_marginTop="@dimen/dp_16"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_choose_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider_2"
        app:text_field_append_drawable_icon_1="@drawable/ic_chevron_down"
        app:text_field_placeholder="@string/reason_placeholder"
        app:text_field_label_static="true"
        app:text_field_label="@string/ask_1_placeholder"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_choose_sub_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tf_choose_reason"
        app:text_field_append_drawable_icon_1="@drawable/ic_chevron_down"
        app:text_field_placeholder="@string/reason_placeholder"
        app:text_field_label_static="true"
        app:text_field_label="@string/ask_2_placeholder"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:visibility="gone"/>
    
    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_req_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="@string/ajukan_btn"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>