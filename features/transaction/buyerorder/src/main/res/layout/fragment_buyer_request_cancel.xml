<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.EmptyState
            android:id="@+id/empty_state_cancellation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_cancellation_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/buyer_ticker_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_16"
                android:visibility="gone"
                app:closeButtonVisibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tickerShapeType="loose"
                app:tickerType="announcement" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/store_name_placeholder"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buyer_ticker_info"
                app:typographyType="body_1"
                app:typographyWeight="reguler"
                tools:text="@string/store_name_placeholder" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/invoice_placeholder"
                android:textColor="@color/Unify_N700_32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_shop_name"
                app:typographyType="body_2"
                app:typographyWeight="reguler"
                tools:text="@string/invoice_placeholder" />

            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/Unify_N75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_invoice" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_product_img"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                app:cardCornerRadius="6dp"
                app:cardElevation="@dimen/dp_0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_1">

                <ImageView
                    android:id="@+id/iv_product"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_48"
                    tools:ignore="ContentDescription" />

            </androidx.cardview.widget.CardView>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:text="@string/product_name_placeholder"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_product_img"
                app:layout_constraintTop_toBottomOf="@id/divider_1"
                app:typographyType="body_1"
                app:typographyWeight="bold"
                tools:text="@string/product_name_placeholder" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_1"
                android:text="@string/product_price_placeholder"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintStart_toEndOf="@id/cv_product_img"
                app:layout_constraintTop_toBottomOf="@id/label_product_name"
                app:typographyType="body_2"
                app:typographyWeight="reguler"
                tools:text="@string/product_price_placeholder" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_see_all_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/see_all_placeholder"
                android:textColor="@color/Unify_G500"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/cv_product_img"
                app:layout_constraintTop_toBottomOf="@id/label_price"
                app:typographyType="body_2"
                app:typographyWeight="reguler"
                tools:text="@string/see_all_placeholder"
                tools:visibility="visible" />

            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/Unify_N50"
                app:layout_constraintTop_toBottomOf="@id/label_see_all_products" />

            <!--start layout cancel already requested-->

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_24"
                android:contentDescription="@string/icon_placeholder"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_2"
                app:srcCompat="@drawable/ic_check_rounded_green_bom" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_title_cancel_requested"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_32"
                android:textColor="@color/Unify_N700_96"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_check"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_body_cancel_requested"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_32"
                android:textColor="@color/Unify_N700_68"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_cancel_requested" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_chat_penjual"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/chat_penjual"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!--end layout cancel already requested-->

            <!--start layout wait to cancel-->

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_cancel_wait_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:textColor="@color/Unify_N700_68"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_cancel_wait_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_80"
                android:textColor="@color/Unify_N700_96"
                android:textSize="@dimen/sp_24"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_cancel_wait_desc"
                app:typographyWeight="bold" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_req_cancel_wait"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:enabled="false"
                android:text="@string/ajukan_btn"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:unifyButtonType="main"
                app:unifyButtonVariant="filled" />

            <!--end layout wait to cancel-->

            <!--start layout available to cancel-->

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/ask_1_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                app:typographyType="body_1"
                app:typographyWeight="bold" />

            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/tf_choose_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_reason"
                app:text_field_append_drawable_icon_1="@drawable/ic_chevron_down"
                app:text_field_label=""
                app:text_field_label_static="true"
                app:text_field_placeholder="@string/reason_placeholder" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_sub_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="@string/ask_2_placeholder"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tf_choose_reason"
                app:typographyType="body_1"
                app:typographyWeight="bold" />

            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/tf_choose_sub_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_sub_reason"
                app:text_field_append_drawable_icon_1="@drawable/ic_chevron_down"
                app:text_field_label=""
                app:text_field_label_static="true"
                app:text_field_placeholder="@string/reason_placeholder" />

            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/tf_choose_sub_reason_editable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tf_choose_reason"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_sub_reason"
                app:text_field_label=""
                app:text_field_label_static="true"
                app:text_field_message="@string/error_message_buyer_request_cancel_reason_should_not_contains_special_chars"
                app:text_field_placeholder="@string/tulis_alasan" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_req_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/ajukan_btn"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!--end layout available to cancel-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>