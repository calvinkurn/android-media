<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/layout_lvl0"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/spacing_lvl4"
    android:layout_marginRight="@dimen/spacing_lvl4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_banner_deal_order_detail">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_deals_banner_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_banner_deal_order_detail" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_deal_banner_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:textColor="@color/Unify_N0"
            app:layout_constraintLeft_toRightOf="@+id/img_deals_banner_icon"
            app:layout_constraintRight_toRightOf="@id/img_chevron_white"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_4"
            app:typographyWeight="bold"
            tools:text="Hai Mike Wiliam," />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tg_deal_banner_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:textColor="@color/Unify_N0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_deals_banner_icon"
            app:layout_constraintRight_toRightOf="@+id/img_chevron_white"
            app:layout_constraintTop_toBottomOf="@id/tg_deal_banner_title"
            app:typographyType="body_3"
            tools:text="Mau Kupon spesial? Bagikan link ini ke teman2 yuk. Halo link ini ke teman2 yuk. " />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_chevron_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_deals_banner_chevron_right_white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>