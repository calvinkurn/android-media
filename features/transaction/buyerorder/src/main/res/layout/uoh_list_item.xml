<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12">

        <ImageView
            android:id="@+id/ic_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/icon_placeholder" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_uoh_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ic_vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            app:typographyWeight="bold"
            tools:text="Belanja"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_uoh_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_uoh_categories"
            app:layout_constraintTop_toBottomOf="@id/tv_uoh_categories"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="6 Mei 2020"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/gray_disable_button_text"/>

        <ImageView
            android:id="@+id/iv_menu_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_kebab"
            android:contentDescription="@string/icon_placeholder" />

        <com.tokopedia.unifycomponents.Label
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/iv_menu_card"
            app:layout_constraintTop_toTopOf="@id/iv_menu_card"
            app:layout_constraintBottom_toBottomOf="@id/iv_menu_card"
            app:labelType="general_dark_orange"
            tools:text="Butuh Revisi"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>
        
        <View
            android:id="@+id/divider_uoh_order_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintTop_toBottomOf="@id/tv_uoh_date"
            android:layout_marginTop="@dimen/dp_12"/>

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/ticker_info_inside_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintLeft_toLeftOf="@id/constraint_layout"
            app:layout_constraintRight_toRightOf="@id/constraint_layout"
            android:visibility="gone"
            tools:visibility="visible"
            app:tickerShapeType="loose"
            app:tickerType="warning"
            android:layout_marginTop="@dimen/dp_8"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_uoh_product"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            app:cardCornerRadius="6dp"
            app:cardElevation="@dimen/dp_0"
            app:layout_constraintTop_toBottomOf="@id/ticker_info_inside_card"
            app:layout_constraintLeft_toLeftOf="@id/constraint_layout"
            app:layout_constraintStart_toStartOf="@id/constraint_layout"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_12">

            <ImageView
                android:id="@+id/ic_uoh_product"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_uoh_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cv_uoh_product"
            app:layout_constraintTop_toBottomOf="@id/divider_uoh_order_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
