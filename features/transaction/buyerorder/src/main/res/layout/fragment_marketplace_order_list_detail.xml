<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:background="@color/Unify_N0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/dp_4" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Unify_N0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_16"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/status_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/status"
                            android:textSize="@dimen/sp_12" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/status_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/fonts"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/lihat_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lihat_text"
                                android:textColor="@color/Unify_G400"
                                android:textSize="@dimen/sp_12"
                                android:visibility="gone" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="@color/Unify_N100" />

                        <com.tokopedia.unifycomponents.ticker.Ticker
                            android:id="@+id/ticker_info_cancellation"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tickerShapeType="loose"
                            app:closeButtonVisibility="gone"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/conditional_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:padding="@dimen/dp_16"
                            android:background="@drawable/card_condition_info"
                            android:gravity="center"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/status_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                    </LinearLayout>

                    <View
                        android:id="@+id/divider_invoice"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:background="@color/Unify_N100" />

                    <RelativeLayout
                        android:id="@+id/rl_invoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_16">

                        <TextView
                            android:id="@+id/invoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"/>

                        <ImageView
                            android:id="@+id/iv_copy_invoice"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:layout_marginStart="@dimen/dp_6"
                            android:layout_marginLeft="@dimen/dp_6"
                            app:srcCompat="@drawable/ic_copy_bom"
                            android:layout_toRightOf="@id/invoice"
                            android:layout_toEndOf="@id/invoice"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/lihat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lihat_text"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/Unify_G400"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/Unify_N0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_info_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="@color/Unify_N700_68"
                    android:text="@string/product_info_label"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:visibility="gone" />
                
                <RelativeLayout
                    android:id="@+id/rl_shop_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/shop_info_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:textColor="@color/Unify_N700_68"
                        android:textSize="@dimen/sp_16"/>
                    
                    <ImageView
                        android:id="@+id/iv_shop_info"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_toRightOf="@id/shop_info_label"
                        android:layout_toEndOf="@id/shop_info_label"
                        android:layout_centerVertical="true"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_items"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listItem="@layout/marketplace_product_detail_item"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                app:cardElevation="@dimen/dp_4" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_10"
                    android:background="@color/Unify_N0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detail_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text="@string/detail_label"
                        android:textColor="@color/Unify_N700_68"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <com.tokopedia.unifycomponents.ticker.Ticker
                        android:id="@+id/additional_ticker_info"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        app:closeButtonVisibility="gone"
                        app:tickerType="announcement"
                        app:tickerShapeType="loose"/>

                    <LinearLayout
                        android:id="@+id/detail_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/additional"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_16"
                        android:text="@string/lihat_detail"
                        android:textColor="@color/Unify_G400"
                        android:textSize="@dimen/font_medium"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/additional_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:orientation="vertical"
                        android:visibility="gone" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/recommend_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/recommend_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:text="top_up" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommendation_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_blue"
                    android:padding="@dimen/dp_8" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                app:cardElevation="@dimen/dp_4" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Unify_N0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/info_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/info_label"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/Unify_N700_68"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/info_payment_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:orientation="vertical" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@color/Unify_N100" />

                    <LinearLayout
                        android:id="@+id/info_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:orientation="vertical" />

                    <View
                        android:id="@+id/divider_discount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@color/Unify_N100"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/ll_info_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:orientation="vertical"
                        android:visibility="gone"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@color/Unify_N100" />

                    <LinearLayout
                        android:id="@+id/total_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:orientation="vertical" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/help_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/actionBtnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:background="@color/Unify_N0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/langannan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/rect_white_stroke_gray"
                    android:gravity="center"
                    android:padding="@dimen/dp_16"
                    android:text="@string/top_btn_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/beli_lagi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:background="@color/Unify_Y500"
                    android:gravity="center"
                    android:padding="@dimen/dp_16"
                    android:text="@string/bottom_btn_text"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <FrameLayout
        android:id="@+id/sticky_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:elevation="@dimen/dp_8"
        android:layout_gravity="bottom"/>

    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_N700_20"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/prog_bar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>