<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    android:padding="@dimen/unify_space_16">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_recharge_order_detail_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/order_detail_recharge_product_detail_label"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5" />

    <LinearLayout
        android:id="@+id/container_recharge_order_detail_product_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_4"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tg_recharge_order_detail_product_title" />

</androidx.constraintlayout.widget.ConstraintLayout>