<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12">

    <com.tokopedia.design.text.SearchInputView
        android:id="@+id/search_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="true"
        android:visibility="visible"
        app:siv_search_hint="@string/hint_cari_transaksi"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.sortfilter.SortFilter
        android:id="@+id/uoh_sort_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/search_input_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"/>

</androidx.constraintlayout.widget.ConstraintLayout>