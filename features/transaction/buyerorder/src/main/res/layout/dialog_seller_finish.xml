<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/dp_6"
        android:textColor="@color/Unify_N700_96"
        android:textSize="@dimen/sp_19"
        tools:text="Selesaikan Pesanan Ini?"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_desc_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_5"
        android:textColor="@color/Unify_N700_96"
        android:textSize="@dimen/sp_14"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_dialog"
        android:layout_marginTop="@dimen/dp_16"
        tools:text="Dengan klik selesai, dana akan diteruskan ke penjual dan Anda tidak dapat mengajukan komplain" />

    <ImageView
        android:id="@+id/iv_finish_detail_1"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        app:srcCompat="@drawable/ic_finish_detail_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_dialog"
        android:layout_marginTop="@dimen/dp_20"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/finish_detail_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_finish_detail_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_finish_detail_1"
        app:layout_constraintStart_toEndOf="@id/iv_finish_detail_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/uoh_finish_order_1"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:textColor="@color/Unify_N700_96"
        android:layout_marginStart="@dimen/dp_16"/>

    <ImageView
        android:id="@+id/iv_finish_detail_2"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_finish_detail_1"
        android:layout_marginTop="@dimen/dp_16"
        tools:ignore="ContentDescription"
        app:srcCompat="@drawable/ic_finish_detail_2"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/finish_detail_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_finish_detail_2"
        app:layout_constraintBottom_toBottomOf="@id/iv_finish_detail_2"
        app:layout_constraintStart_toEndOf="@id/iv_finish_detail_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/uoh_finish_order_2"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:textColor="@color/Unify_N700_96"
        android:layout_marginStart="@dimen/dp_16"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_cancel_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:unifyButtonVariant="ghost"
        app:layout_constraintTop_toBottomOf="@id/finish_detail_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_ok_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/finish_detail_2"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_5"/>

</androidx.constraintlayout.widget.ConstraintLayout>