<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <com.tokopedia.design.text.SearchInputView
        android:id="@+id/simpleSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="@string/hint_search_text"
        android:visibility="gone" />
    <com.tokopedia.design.quickfilter.custom.CustomViewRounderCornerFilterView
        android:id="@+id/quick_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simpleSearchView"
        android:orientation="vertical"
        android:visibility="visible" />
    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/quick_filter">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/order_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:listSelector="@android:color/transparent" />

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>
    <LinearLayout
        android:id="@+id/filterDate"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/filter_button_white_bg"
        android:elevation="@dimen/dp_5"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">
        <ImageView
            android:id="@+id/filter_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:srcCompat="@drawable/ic_filter_buyer"
            android:contentDescription="@string/img_content_desc" />
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_8"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            android:text="@string/filter"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            />
        <ImageView
            android:id="@+id/checkImageView"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check"
            android:contentDescription="@string/img_content_desc" />
    </LinearLayout>

    <ImageView
        android:id="@+id/survey_bom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/survey_btn"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10"
        android:contentDescription="@string/img_content_desc" />
</RelativeLayout>