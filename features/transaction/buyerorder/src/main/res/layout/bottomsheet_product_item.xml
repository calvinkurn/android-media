<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_product_img"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_product_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700_96"
        tools:text="@string/product_name_placeholder"
        android:text="@string/product_name_placeholder"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cv_product_img"
        app:layout_constraintTop_toBottomOf="@id/label_product_name"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/Unify_Y500"
        tools:text="@string/product_price_placeholder"
        android:text="@string/product_price_placeholder"
        app:typographyWeight="bold"
        android:layout_marginStart="@dimen/dp_12"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_N75"
        app:layout_constraintTop_toBottomOf="@id/cv_product_img"
        android:layout_marginTop="@dimen/dp_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>