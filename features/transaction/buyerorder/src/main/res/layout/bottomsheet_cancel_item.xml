<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="heading_5"
        android:textColor="@color/Neutral_N700_96"
        android:text="@string/reason_cancel"
        tools:text="@string/reason_cancel"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp_27"
        android:gravity="center_vertical"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/Neutral_N75"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_below="@id/label_cancel"/>

</RelativeLayout>