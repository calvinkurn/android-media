<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recharge_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/recharge_order_detail_loader"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circular" />

    <FrameLayout
        android:id="@+id/container_recharge_order_detail_sticky_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:elevation="@dimen/unify_space_8"
        android:paddingHorizontal="@dimen/unify_space_16"
        android:paddingVertical="@dimen/unify_space_8"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_recharge_order_detail_sticky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:unifyButtonSize="medium" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>