<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_20">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tagLine"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:lineSpacingExtra="@dimen/sp_6"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Terlambat Bayar"
        tools:textColor="@color/Unify_R500"
        tools:visibility="gone"
        tools:background="@drawable/bg_rounded_pink_label_buyer"
        />

    <TextView
        android:id="@+id/pricePrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/Unify_N700_68"
        android:lineSpacingExtra="@dimen/sp_6"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/dp_4"
        app:layout_constraintStart_toEndOf="@+id/tagLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/strikeThroughPrice"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        tools:visibility="gone"
        tools:text="mulai dari"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/strikeThroughPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/Unify_N700_68"
        android:lineSpacingExtra="@dimen/sp_6"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/dp_4"
        app:layout_constraintStart_toEndOf="@+id/pricePrefix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price"
        tools:visibility="visible"
        tools:text="Rp3.425.000" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_2"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="@color/Unify_N700_68"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rp3.425.000"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

