<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_option_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            android:textColor="@color/Neutral_N700_96"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/rb_option"
            android:layout_marginBottom="@dimen/dp_20"
            android:visibility="gone"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sublabel_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            android:textColor="@color/Neutral_N700_96"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/rb_option"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:visibility="gone"/>

        <RadioButton
            android:id="@+id/rb_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/divider_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/Neutral_N75"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@id/label_option"/>

        <View
            android:id="@+id/divider_sublabel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/Neutral_N75"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@id/sublabel_option"/>

</RelativeLayout>