<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_option_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            android:textColor="@color/Neutral_N700_96"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/rb_option"
            android:layout_toLeftOf="@id/rb_option"
            android:layout_marginBottom="@dimen/dp_20"/>

        <RadioButton
            android:id="@+id/rb_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/Neutral_N75"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_below="@id/label_option"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>