<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/booking_code_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_lvl3">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/booking_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/voucher_code_title"
        app:typographyType="display_3"
        android:textColor="@color/Unify_NN600"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/booking_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_code_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="@string/booking_code"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/copyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_code_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/salin_text"
        android:textColor="@color/Unify_GN500"
        app:typographyType="display_3"
        app:typographyWeight="bold"/>

</RelativeLayout>
