<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/booking_code_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/booking_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/voucher_code_title"
        app:typographyType="body_3"
        android:textColor="@color/Unify_N700_68"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/booking_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_code_title"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/booking_code"
        android:textColor="@color/Unify_N700_96"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/copyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booking_code_title"
        app:drawableLeftCompat="@drawable/salin_drawable"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/salin_text"
        android:textColor="@color/Unify_G400"
        android:textSize="@dimen/sp_12"/>

    <ImageView
        android:id="@+id/divider_booking_code"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/booking_code"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/dash_line_grey"
        android:contentDescription="@string/image_desc" />
</RelativeLayout>
