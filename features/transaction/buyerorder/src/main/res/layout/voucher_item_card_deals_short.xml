<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/spacing_lvl4"
    android:layout_marginRight="@dimen/spacing_lvl4"
    app:cardCornerRadius="@dimen/deals_voucher_corner_ticket_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.topads.sdk.view.RoundedCornerImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_width_brand"
            android:layout_height="@dimen/image_width_brand"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:background="@color/Unify_NN50"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginBottom="@dimen/spacing_lvl3" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_deal_intro"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/margin_small"
            android:fontFamily="sans-serif-medium"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950_68"
            app:typographyType="display_2"
            app:typographyWeight="reguler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:fontFamily="sans-serif"
            android:textColor="@color/Unify_NN950_44"
            app:typographyType="display_3"
            app:typographyWeight="reguler"
            app:layout_constraintBottom_toTopOf="@+id/tv_redeem_locations"
            app:layout_constraintLeft_toRightOf="@+id/imageView" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_redeem_locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:fontFamily="sans-serif"
            android:textColor="@color/Unify_NN950_44"
            app:typographyType="display_3"
            app:typographyWeight="reguler"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintLeft_toRightOf="@+id/imageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>