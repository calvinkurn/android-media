<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/ll_kebab_menu_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <com.tokopedia.iconunify.IconUnify
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:icon_name="EDIT"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collection_item_kebab_menu_1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            app:typographyType="heading_5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_kebab_menu_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_kebab_menu_1"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <com.tokopedia.iconunify.IconUnify
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:icon_name="DELETE"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collection_item_kebab_menu_2"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            app:typographyType="heading_5"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>