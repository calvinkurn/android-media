<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <com.tokopedia.searchbar.navigation_component.NavToolbar
        android:id="@+id/wishlist_collection_navtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:visibility="visible"
        app:toolbarPageName="@string/page_name_wishlist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:toolbarContentType="typeSearchbar"
        app:toolbarBackButton="none"
        app:toolbarInitialTheme="light"
        app:toolbarInvertSearchBarColor="true"
        app:toolbarAlwaysShowShadow="false" />

    <include
        android:id="@+id/test_card_image_loader"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wishlist_collection_navtoolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/collection_wishlist_v2_loader_image_card_item"/>

    <include
        android:id="@+id/test_card_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/test_card_image_loader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/collection_wishlist_v2_image_card_item"/>

    <include
        android:id="@+id/test_card_new_collection"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/test_card_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/collection_wishlist_v2_create_item"/>

    <include
        android:id="@+id/test_ticker_collection"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/test_card_new_collection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/collection_wishlist_v2_ticker_item"/>

