<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/collection_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/main_collection_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        android:layout_alignTop="@id/collection_item_image"
        android:layout_toEndOf="@id/collection_item_image"
        android:layout_marginStart="12dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/main_collection_total_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:layout_below="@id/main_collection_total_item"
        android:layout_alignBottom="@+id/collection_item_image"
        android:layout_toEndOf="@id/collection_item_image"
        android:layout_marginStart="12dp"
        android:textColor="@color/Unify_N700_68"/>

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_collection_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/main_collection_item_name"
        app:labelType="highlight_light_grey"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:icon_name="CHECK"
        app:icon_color_light_enable="@color/Unify_G500"
        app:icon_color_night_enable="@color/Unify_G500"
        android:visibility="gone"/>

</RelativeLayout>