<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_weight="95"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/affiliate_onboarding_title"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="display_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/first_bullet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/wishlist_affiliate_bullet_bg"
                android:padding="8dp"
                android:text="1"
                android:textColor="@color/Unify_TN500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_header"
                app:typographyType="display_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/first_bullet_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/affiliate_onboarding_first"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/first_bullet"
                app:layout_constraintTop_toTopOf="@id/first_bullet"
                app:typographyType="display_3" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/image_first_bullet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/first_bullet_content"
                app:unify_image_url_src="https://images.tokopedia.net/img/https:/images.tokopedia.net/img/android/res/singleDpi/affliate/wishlist_affiliate_onboarding_wishlist_create.png" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/second_bullet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/wishlist_affiliate_bullet_bg"
                android:padding="8dp"
                android:text="2"
                android:textColor="@color/Unify_TN500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_first_bullet"
                app:typographyType="display_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/second_bullet_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/affiliate_onboarding_second_register"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintBottom_toBottomOf="@id/second_bullet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/second_bullet"
                app:layout_constraintTop_toTopOf="@id/second_bullet"
                app:typographyType="display_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/third_bullet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/wishlist_affiliate_bullet_bg"
                android:padding="8dp"
                android:text="3"
                android:textColor="@color/Unify_TN500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/second_bullet_content"
                app:typographyType="display_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/third_bullet_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/affiliate_onboarding_third"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/third_bullet"
                app:layout_constraintTop_toTopOf="@id/third_bullet"
                app:typographyType="display_3" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/image_third_bullet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/third_bullet_content"
                app:unify_image_url_src="https://images.tokopedia.net/img/https:/images.tokopedia.net/img/https:/images.tokopedia.net/img/android/res/singleDpi/affliate/wishlist_affiliate_onboarding_commision_info.png" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/affiliate_onboarding_register_footer"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_third_bullet"
                app:typographyType="display_2"
                app:typographyWeight="bold" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button_onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_footer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/affiliate_onboarding_login_action" />
</LinearLayout>