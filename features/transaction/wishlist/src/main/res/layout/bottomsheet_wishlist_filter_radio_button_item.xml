<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_option_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="heading_5"
        android:textColor="@color/Unify_N700_96"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/rb_option"
        android:layout_marginBottom="20dp"
        tools:text="Test Label"/>

    <RadioButton
        android:id="@+id/rb_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/divider_label"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_N75"
        android:layout_marginTop="16dp"
        android:layout_below="@id/label_option"/>

</RelativeLayout>