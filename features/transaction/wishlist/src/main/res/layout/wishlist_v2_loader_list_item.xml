<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_4"
    android:layout_marginRight="@dimen/dp_4"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_iv_wishlist"
            android:layout_width="@dimen/unify_space_96"
            android:layout_height="@dimen/unify_space_96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="rect"
            app:loader_corner_radius="6dp"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_1"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_8"
            app:layout_constraintStart_toEndOf="@id/loader_iv_wishlist"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_2"
            android:layout_width="@dimen/dp_119"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/unify_space_8"
            app:layout_constraintStart_toStartOf="@id/loader_wishlist_line_1"
            app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_1"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_3"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/unify_space_8"
            app:layout_constraintStart_toStartOf="@id/loader_wishlist_line_2"
            app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_2"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_4"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/unify_space_8"
            app:layout_constraintStart_toStartOf="@id/loader_wishlist_line_3"
            app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_3"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_5"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/unify_space_8"
            app:layout_constraintStart_toStartOf="@id/loader_wishlist_line_4"
            app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_4"
            app:loader_type="rect"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
