<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_option_checkbox_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="heading_5"
        android:textColor="@color/Unify_N700_96"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Test Label"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/desc_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:textColor="@color/light_N700_68"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        tools:text="Test Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_option"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"/>

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cb_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/title_option"
        app:layout_constraintBottom_toBottomOf="@id/desc_option"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider_label"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_N75"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/desc_option"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>