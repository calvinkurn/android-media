<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_loader_grid_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_iv_wishlist"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="rect"
            app:loader_corner_radius="6dp"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loader_iv_wishlist"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/loader_wishlist_line_1"
            app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_1"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/loader_wishlist_line_2"
            app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_2"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/loader_wishlist_line_3"
            app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_3"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="67dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/loader_wishlist_line_4"
            app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_4"
            app:loader_type="rect"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_wishlist_line_6"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/loader_wishlist_line_5"
            app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_5"
            app:loader_type="rect"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
