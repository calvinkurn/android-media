<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/wishlist_cleaner_option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        tools:text="Pilih Sendiri"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/wishlist_cleaner_option_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/wishlist_cleaner_option_title"
        app:typographyType="body_2"
        tools:text="Pilih satu per satu dari urutan terlama disimpan"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/wishlist_cleaner_option_icon_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_name="CHECK_BIG"
        app:icon_color_light_enable="@color/Unify_G500"
        app:icon_color_night_enable="@color/Unify_G500"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/wishlist_cleaner_option_title"
        android:layout_alignBottom="@id/wishlist_cleaner_option_desc"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/wishlist_cleaner_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/wishlist_cleaner_option_desc"/>

</RelativeLayout>