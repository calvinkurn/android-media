<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:visibility="gone"
    tools:visibility="visible">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/sort_loader_wishlist_1"
        android:layout_width="86dp"
        android:layout_height="31dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/sort_loader_wishlist_2"
        android:layout_width="86dp"
        android:layout_height="31dp"
        app:loader_type="rect"
        android:layout_toEndOf="@id/sort_loader_wishlist_1"
        android:layout_marginStart="4dp"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/sort_loader_wishlist_3"
        android:layout_width="86dp"
        android:layout_height="31dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/sort_loader_wishlist_2"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/sort_loader_wishlist_4"
        android:layout_width="86dp"
        android:layout_height="31dp"
        app:loader_type="rect"
        android:layout_toEndOf="@id/sort_loader_wishlist_3"
        android:layout_marginStart="4dp"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/counter_loader_wishlist"
        android:layout_width="93dp"
        android:layout_height="10dp"
        app:loader_type="rect"
        android:layout_below="@id/sort_loader_wishlist_1"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/atur_loader_wishlist"
        android:layout_width="76dp"
        android:layout_height="10dp"
        app:loader_type="rect"
        android:layout_below="@id/sort_loader_wishlist_1"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>