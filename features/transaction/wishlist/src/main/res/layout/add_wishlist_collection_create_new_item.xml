<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:id="@+id/fl_create_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/create_collection_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/create_collection_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/fl_create_icon"
        app:layout_constraintTop_toTopOf="@id/fl_create_icon"
        app:layout_constraintBottom_toBottomOf="@id/fl_create_icon"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        android:textColor="@color/Unify_G500"/>

</androidx.constraintlayout.widget.ConstraintLayout>