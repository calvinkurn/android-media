<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingBottom="20dp">

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/collection_create_name_input_text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:unify_text_field_label="@string/collection_bottomsheet_label"
        app:unify_text_field_counter="20"
        android:layout_marginBottom="20dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/collection_privacy_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collection_create_name_input_text_field"
        app:layout_constraintBottom_toTopOf="@id/collection_create_button"
        app:typographyWeight="reguler"
        app:typographyType="paragraph_3"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/Unify_NN600"
        android:text="@string/collection_privacy_message"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/collection_create_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collection_privacy_message"
        android:text="@string/collection_create_bottomsheet_button_label"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>