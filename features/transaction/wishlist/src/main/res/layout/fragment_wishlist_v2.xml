<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Unify_N0"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <View
        android:visibility="invisible"
        android:id="@+id/statusbar"
        android:background="@color/Unify_N0"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.searchbar.navigation_component.NavToolbar
        android:id="@+id/wishlist_navtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:visibility="visible"
        app:toolbarPageName="@string/page_name_wishlist"
        app:layout_constraintTop_toBottomOf="@+id/statusbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:toolbarContentType="typeSearchbar"
        app:toolbarBackButton="none"
        app:toolbarInitialTheme="light"
        app:toolbarInvertSearchBarColor="true"
        app:toolbarAlwaysShowShadow="false" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_wishlist_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wishlist_navtoolbar"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/rl_wishlist_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.sortfilter.SortFilter
                android:id="@+id/wishlist_sort_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:paddingBottom="12dp"
                android:layout_marginStart="12dp"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/wishlist_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wishlist_sort_filter"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                tools:text="10 barang"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/wishlist_manage_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wishlist_sort_filter"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:text="@string/wishlist_manage_label"
                android:textColor="@color/g_500"/>
            
            <View
                android:id="@+id/wishlist_divider"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/wishlist_manage_label"
                android:layout_alignTop="@id/wishlist_manage_label"
                android:layout_alignBottom="@id/wishlist_manage_label"
                android:background="@color/unify_N75"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"/>

            <com.tokopedia.iconunify.IconUnify
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/wishlist_divider"
                app:icon_name="VIEW_LIST"
                android:layout_marginEnd="8dp"
                android:layout_alignTop="@id/wishlist_manage_label"
                android:layout_alignBottom="@id/wishlist_manage_label"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wishlist_sort_loader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            tools:visibility="visible">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/sort_loader_wishlist_1"
                android:layout_width="86dp"
                android:layout_height="31dp"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/sort_loader_wishlist_2"
                android:layout_width="86dp"
                android:layout_height="31dp"
                app:loader_type="rect"
                android:layout_toEndOf="@id/sort_loader_wishlist_1"
                android:layout_marginStart="4dp"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/sort_loader_wishlist_3"
                android:layout_width="86dp"
                android:layout_height="31dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/sort_loader_wishlist_2"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/sort_loader_wishlist_4"
                android:layout_width="86dp"
                android:layout_height="31dp"
                app:loader_type="rect"
                android:layout_toEndOf="@id/sort_loader_wishlist_3"
                android:layout_marginStart="4dp"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/counter_loader_wishlist"
                android:layout_width="93dp"
                android:layout_height="10dp"
                app:loader_type="rect"
                android:layout_below="@id/sort_loader_wishlist_1"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentStart="true"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/atur_loader_wishlist"
                android:layout_width="76dp"
                android:layout_height="10dp"
                app:loader_type="rect"
                android:layout_below="@id/sort_loader_wishlist_1"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_wishlist_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_wishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <FrameLayout
        android:id="@+id/container_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/bg_delete_wishlist"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wishlist_v2_delete_text"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:enabled="true"
            app:unifyButtonVariant="filled"
            app:unifyButtonType="main"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>