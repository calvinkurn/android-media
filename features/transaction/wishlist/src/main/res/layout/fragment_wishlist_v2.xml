<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Unify_N0"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16">

    <View
        android:visibility="invisible"
        android:id="@+id/statusbar"
        android:background="@color/Unify_N0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.searchbar.navigation_component.NavToolbar
        android:id="@+id/wishlist_navtoolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:visibility="visible"
        app:toolbarPageName="@string/page_name_wishlist"
        app:layout_constraintTop_toBottomOf="@+id/statusbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:toolbarContentType="typeSearchbar"
        app:toolbarBackButton="none"
        app:toolbarInitialTheme="light"
        app:toolbarInvertSearchBarColor="true"
        app:toolbarAlwaysShowShadow="false" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_wishlist_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wishlist_navtoolbar"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/rl_wishlist_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.sortfilter.SortFilter
                android:id="@+id/wishlist_sort_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:paddingBottom="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/wishlist_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wishlist_sort_filter"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/dp_16"
                tools:text="10 barang"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/wishlist_manage_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wishlist_sort_filter"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/wishlist_manage_label"/>
            
            <View
                android:id="@+id/wishlist_divider"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_24"
                android:layout_toStartOf="@id/wishlist_manage_label"
                android:layout_alignTop="@id/wishlist_manage_label"
                android:layout_alignBottom="@id/wishlist_manage_label"
                android:background="@color/unify_N75"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_16"/>

            <com.tokopedia.iconunify.IconUnify
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/wishlist_divider"
                app:icon_name="VIEW_LIST"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_alignTop="@id/wishlist_manage_label"
                android:layout_alignBottom="@id/wishlist_manage_label"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wishlist_sort_loader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_12"
            android:visibility="gone"
            tools:visibility="visible">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/sort_loader_wishlist_1"
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_31"
                app:loader_type="rect"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/sort_loader_wishlist_2"
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_31"
                app:loader_type="rect"
                android:layout_toEndOf="@id/sort_loader_wishlist_1"
                android:layout_marginStart="@dimen/dp_4"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/sort_loader_wishlist_3"
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_toEndOf="@id/sort_loader_wishlist_2"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/sort_loader_wishlist_4"
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_31"
                app:loader_type="rect"
                android:layout_toEndOf="@id/sort_loader_wishlist_3"
                android:layout_marginStart="@dimen/dp_4"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/counter_loader_wishlist"
                android:layout_width="@dimen/dp_93"
                android:layout_height="@dimen/dp_10"
                app:loader_type="rect"
                android:layout_below="@id/sort_loader_wishlist_1"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_alignParentStart="true"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/atur_loader_wishlist"
                android:layout_width="@dimen/dp_76"
                android:layout_height="@dimen/dp_10"
                app:loader_type="rect"
                android:layout_below="@id/sort_loader_wishlist_1"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_wishlist_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_wishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</androidx.constraintlayout.widget.ConstraintLayout>