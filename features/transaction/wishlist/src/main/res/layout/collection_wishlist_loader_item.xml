<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/card_loader_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/gl_loader_item"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:columnCount="2"
                android:rowCount="2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/loader_collection_1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:loader_type="rect"
                    app:loader_corner_radius="6dp"
                    android:layout_marginEnd="1.5dp"
                    android:layout_marginBottom="1.5dp" />

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/loader_collection_2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:loader_type="rect"
                    app:loader_corner_radius="6dp"
                    android:layout_marginStart="1.5dp"
                    android:layout_marginBottom="1.5dp"/>

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/loader_collection_3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:loader_type="rect"
                    app:loader_corner_radius="6dp"
                    android:layout_marginEnd="1.5dp"
                    android:layout_marginTop="1.5dp"/>

                <com.tokopedia.unifycomponents.LoaderUnify
                    android:id="@+id/loader_collection_4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:loader_type="rect"
                    app:loader_corner_radius="6dp"
                    android:layout_marginStart="1.5dp"
                    android:layout_marginTop="1.5dp"/>

            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify2>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_wishlist_line_1"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_loader_item"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_wishlist_line_2"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loader_wishlist_line_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:loader_type="rect"/>

</androidx.constraintlayout.widget.ConstraintLayout>