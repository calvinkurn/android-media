<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/empty_state_not_found_img"
            android:layout_width="128dp"
            android:layout_height="92dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/empty_state_not_found_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/empty_state_not_found_title"
            android:layout_marginStart="16dp"
            app:typographyType="heading_5"
            app:layout_constraintStart_toEndOf="@id/empty_state_not_found_img"
            app:layout_constraintTop_toTopOf="@id/empty_state_not_found_img"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/empty_state_not_found_description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/empty_state_not_found_img"
            app:layout_constraintTop_toBottomOf="@id/empty_state_not_found_title_text"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/empty_state_not_found_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="@string/empty_state_not_found_button"
            app:layout_constraintTop_toBottomOf="@id/barrier_empty_state"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="empty_state_not_found_img,empty_state_not_found_description_text" />


</androidx.constraintlayout.widget.ConstraintLayout>