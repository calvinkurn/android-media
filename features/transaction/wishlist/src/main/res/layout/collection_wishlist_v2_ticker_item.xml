<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collection_ticker_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/wishlist_collection_ticker_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/bg_ticker_wishlist_collection"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_close_ticker_collection_wishlist"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:padding="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:icon_name="CLOSE"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/wishlist_collection_ticker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="body_2"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/wishlist_collection_ticker_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="body_3"/>

        </LinearLayout>

    </RelativeLayout>

</com.tokopedia.unifycomponents.CardUnify2>