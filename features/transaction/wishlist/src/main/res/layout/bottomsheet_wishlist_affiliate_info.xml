<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_wishlist_collection_info_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            android:text="@string/collection_affiliate_info_header"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_wishlist_collection_info_content_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:typographyType="display_3"
            android:text="@string/collection_affiliate_info_content_top"
            app:layout_constraintTop_toBottomOf="@id/label_wishlist_collection_info_header" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_wishlist_collection_info_image_top"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/label_wishlist_collection_info_content_top"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_wishlist_collection_info_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:typographyType="display_3"
            app:layout_constraintTop_toBottomOf="@id/image_wishlist_collection_info_image_top" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_wishlist_collection_info_image_bottom"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/label_wishlist_collection_info_content_bottom"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_wishlist_collection_info_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            android:text="@string/collection_affiliate_info_footer"
            app:layout_constraintTop_toBottomOf="@id/image_wishlist_collection_info_image_bottom" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_wishlist_collection_info_sub_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:typographyType="display_3"
            android:text="@string/collection_affiliate_info_footer"
            app:layout_constraintTop_toBottomOf="@id/label_wishlist_collection_info_footer" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_wishlist_collection_info_affiliate_banner"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/label_wishlist_collection_info_sub_footer"
            />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_affiliate_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/image_wishlist_collection_info_affiliate_banner"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>