<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/label_toko"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toStartOf="@+id/iv_shop"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/tv_shop"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:layout_constraintWidth_default="wrap"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_shop"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/label_error"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/tv_shop_name"
        app:layout_constraintTop_toTopOf="@+id/tv_shop_name" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_120"
        android:maxLines="2"
        android:visibility="gone"
        app:labelType="general_dark_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Unify_N700_44"
        app:layout_constraintEnd_toEndOf="@+id/tv_shop_name"
        app:layout_constraintStart_toStartOf="@+id/tv_shop"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop"
        app:typographyType="small"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_product_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/dp_16"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/tv_shop_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop_location" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_image"
        app:layout_constraintTop_toTopOf="@+id/iv_product_image"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:constraint_referenced_ids="tv_product_slash_price,tv_product_price"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="@dimen/dp_10"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="@dimen/dp_4"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/barrier_product_extra" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_slash_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_N150"
        android:visibility="gone"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/lbl_cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:labelTitle="@string/label_cashback"
        app:labelType="general_light_green"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_free_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toEndOf="@id/lbl_cashback"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_product_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="lbl_cashback,iv_free_shipping" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_quantity_stock_available"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintEnd_toStartOf="@+id/qty_editor_product"
        app:layout_constraintStart_toStartOf="@+id/iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/flow"
        app:typographyType="body_3" />

    <com.tokopedia.unifycomponents.QuantityEditorUnify
        android:id="@+id/qty_editor_product"
        android:layout_width="@dimen/qty_editor_product_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier_product_qty"
        app:text_field_counter="144"
        app:text_field_input_type="text"
        app:text_field_label="@string/label_note_for_seller" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_product_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_quantity_stock_available,qty_editor_product" />
</merge>