<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/label_toko"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toStartOf="@+id/label_error"
        app:layout_constraintStart_toEndOf="@+id/tv_shop"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Toko Sepeda A" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_120"
        android:maxLines="2"
        android:visibility="gone"
        app:labelType="general_dark_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        tools:labelTitle="Bukan barang testing" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Neutral_N700_44"
        app:layout_constraintEnd_toEndOf="@+id/tv_shop_name"
        app:layout_constraintStart_toStartOf="@+id/tv_shop"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop"
        app:typographyType="small"
        app:typographyWeight="reguler"
        tools:text="Jakarta" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_product_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="@+id/tv_shop_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop_location" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_image"
        app:layout_constraintTop_toTopOf="@+id/iv_product_image"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Sepeda Bagus Sekali" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:constraint_referenced_ids="tv_product_slash_price,tv_product_price"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="@dimen/dp_10"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="@dimen/dp_4"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/barrier_product_extra" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_slash_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#BDBDBD"
        android:visibility="gone"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="Rp 1.000.000.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp 1.000.000" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/lbl_cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:labelTitle="@string/label_cashback"
        app:labelType="general_light_green"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_free_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toEndOf="@id/lbl_cashback"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_product_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="lbl_cashback,iv_free_shipping" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_quantity_stock_available"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toStartOf="@+id/btn_qty_min"
        app:layout_constraintStart_toStartOf="@+id/iv_product_image"
        app:layout_constraintTop_toBottomOf="@+id/flow"
        app:typographyType="body_3"
        tools:text="Stok terbatas! Tersedia &lt; 5" />

    <ImageView
        android:id="@+id/btn_qty_min"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="@dimen/dp_2"
        app:layout_constraintEnd_toStartOf="@+id/et_qty"
        app:layout_constraintTop_toBottomOf="@+id/flow"
        app:srcCompat="@drawable/bg_button_counter_minus_checkout_enabled"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_qty"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/black_70"
        android:textColorHighlight="@color/tkpd_main_green"
        android:textSize="@dimen/sp_16"
        app:backgroundTint="@color/tkpd_main_green"
        app:layout_constraintBottom_toBottomOf="@+id/btn_qty_plus"
        app:layout_constraintEnd_toStartOf="@+id/btn_qty_plus"
        app:layout_constraintTop_toTopOf="@+id/btn_qty_plus"
        tools:text="10000" />

    <ImageView
        android:id="@+id/btn_qty_plus"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:padding="@dimen/dp_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow"
        app:srcCompat="@drawable/bg_button_counter_plus_checkout_enabled"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_error_form_validation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:gravity="end"
        android:textAlignment="gravity"
        android:textColor="@color/Red_R600"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_qty_min"
        app:layout_constraintTop_toBottomOf="@+id/et_qty"
        app:typographyType="body_3"
        tools:text="Maksimal 2 broh hjadjf askjbfk kjabfdk ashfb aksbfkabsf "
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier_product_qty"
        app:text_field_counter="144"
        app:text_field_input_type="text"
        app:text_field_label="@string/label_note_for_seller" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_product_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_quantity_stock_available,btn_qty_min,et_qty,btn_qty_plus,tv_error_form_validation" />

</merge>