<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.abstraction.base.view.widget.SwipeToRefresh xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:enabled="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_preference_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:lines="1"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_3"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_address_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toStartOf="@+id/btn_change_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_preference_name"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_address_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_48"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_address_name"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/btn_change_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_24"
                android:text="@string/lbl_change_template"
                android:textColor="@color/Unify_G500"
                app:layout_constraintBottom_toBottomOf="@+id/tv_address_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_address_name"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/Unify_N75"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_address_detail" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_shipping_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:lines="1"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toStartOf="@+id/btn_change_duration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:typographyType="body_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_shipping_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:lines="1"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintEnd_toEndOf="@+id/tv_shipping_name"
                app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_shipping_name"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/btn_change_duration"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_24"
                android:text="@string/lbl_change_template"
                android:textColor="@color/Unify_G500"
                app:layout_constraintBottom_toBottomOf="@+id/tv_shipping_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_shipping_name"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/Unify_N75"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_shipping_duration" />

            <ImageView
                android:id="@+id/iv_payment"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_14"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/tv_payment_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                tools:ignore="ContentDescription" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_payment_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_16"
                android:ellipsize="end"
                android:lines="1"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toStartOf="@+id/btn_change_payment"
                app:layout_constraintStart_toEndOf="@+id/iv_payment"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:typographyType="body_2"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_payment_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintEnd_toEndOf="@+id/tv_payment_name"
                app:layout_constraintStart_toStartOf="@+id/tv_payment_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_payment_name"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="iv_payment,tv_payment_detail" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_payment_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:textColor="@color/Unify_N700_96"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier_payment"
                app:typographyType="body_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/ticker_payment_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:visibility="gone"
                app:closeButtonVisibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_payment_info"
                app:tickerShapeType="loose"
                app:tickerType="announcement" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/btn_change_payment"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_24"
                android:text="@string/lbl_change_template"
                android:textColor="@color/Unify_G500"
                app:layout_constraintBottom_toBottomOf="@+id/tv_payment_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_payment_name"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/Unify_N75"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ticker_payment_info" />

            <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
                android:id="@+id/cb_main_preference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_main_preference"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_default_preference_profile"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintBottom_toBottomOf="@+id/cb_main_preference"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cb_main_preference"
                app:layout_constraintTop_toTopOf="@+id/cb_main_preference"
                app:typographyType="body_3"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:text="@string/lbl_save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cb_main_preference"
                app:layout_constraintVertical_bias="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tokopedia.globalerror.GlobalError
            android:id="@+id/global_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone" />

    </FrameLayout>

</com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>