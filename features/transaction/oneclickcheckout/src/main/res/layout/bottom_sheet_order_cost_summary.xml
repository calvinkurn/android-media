<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_product_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/lbl_total_item_price"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_product_price_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_product_price_label"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_purchase_protection_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/lbl_purchase_protection_price"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_product_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_purchase_protection_price_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_purchase_protection_price_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_product_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_product_discount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_product_discount"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_purchase_protection_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_product_discount_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_product_discount_label"
            app:layout_constraintTop_toBottomOf="@id/tv_purchase_protection_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_shipping_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_shipment_fee"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_product_discount_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_shipping_price_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_shipping_price_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_product_discount_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_shipping_discount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_shipping_discount"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_shipping_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_shipping_discount_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_shipping_discount_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_shipping_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_insurance_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_shipment_insurance"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_shipping_discount_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_insurance_price_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_insurance_price_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_shipping_discount_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_fee_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/occ_lbl_installment_fee"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_insurance_price_value"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_fee_price_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_payment_fee_price_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_insurance_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_payment_fee_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/lbl_additional_fee"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_installment_fee_price_value"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_payment_fee_price_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_payment_fee_price_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_installment_fee_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_payment_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_pay_total"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_payment_fee_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_payment_price_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_payment_price_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_payment_fee_price_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/divider_installment"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/Unify_N75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_payment_price_value" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_term_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/occ_lbl_installment_summary_period"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_installment"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_term_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_installment_term_label"
            app:layout_constraintTop_toBottomOf="@id/divider_installment"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_per_period_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/occ_lbl_installment_summary_amount_per_period"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_installment_term_value"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_per_period_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_installment_per_period_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_installment_term_value"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_first_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/occ_lbl_installment_summary_first_date"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_installment_per_period_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_first_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_installment_first_date_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_installment_per_period_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_last_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/occ_lbl_installment_summary_last_date"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_installment_first_date_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_installment_last_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_total_installment_last_date_label"
            app:layout_constraintTop_toBottomOf="@id/tv_total_installment_first_date_value"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/divider_cashback"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/Unify_N75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total_installment_last_date_value" />

        <LinearLayout
            android:id="@+id/ll_cashback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_cashback" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>