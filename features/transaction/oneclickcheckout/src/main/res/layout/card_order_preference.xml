<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradient_green">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_card_header"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:background="@color/Neutral_N100"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_card_header" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_card_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:lines="1"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintBottom_toBottomOf="@+id/iv_card_header"
                app:layout_constraintStart_toStartOf="@+id/iv_card_header"
                app:layout_constraintTop_toTopOf="@+id/iv_card_header"
                app:typographyType="heading_5"
                app:typographyWeight="bold"
                tools:text="Rekomendasi Pilihan" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/lbl_main_preference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                app:labelTitle="@string/lbl_default_preference"
                app:labelType="general_light_grey"
                app:layout_constraintBottom_toBottomOf="@id/iv_card_header"
                app:layout_constraintStart_toEndOf="@+id/tv_card_header"
                app:layout_constraintTop_toTopOf="@id/iv_card_header" />

            <ImageView
                android:id="@+id/iv_edit_preference"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="@+id/iv_card_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_card_header"
                app:srcCompat="@drawable/ic_system_action_gear_normal_24"
                tools:ignore="ContentDescription" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:lines="1"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_card_header"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="Kantor baba asd a sdf asdf " />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_address_receiver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/tv_address_name"
                app:layout_constraintTop_toTopOf="@+id/tv_address_name"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="- Tari (08xxxxxxxxxxxx)" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_address_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/Neutral_N700_68"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_address_name"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="tokopedia tower lantai asdfl jalan lasdfj lajsdf lkasjdf lj" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_address_detail" />

            <include
                android:id="@+id/layout_order_preference_shipping"
                layout="@layout/layout_order_preference_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <include
                android:id="@+id/layout_order_preference_payment"
                layout="@layout/layout_order_preference_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_order_preference_shipping" />

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/Neutral_N75"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_order_preference_payment" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_choose_preference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingStart="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_6"
                android:paddingTop="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_12"
                android:text="@string/label_choose_other_preference"
                android:textColor="@color/Green_G500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>
</FrameLayout>