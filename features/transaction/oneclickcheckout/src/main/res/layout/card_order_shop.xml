<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_order_shop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:text="@string/lbl_osp_header"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_shop_badge"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        app:layout_constraintEnd_toStartOf="@+id/tv_shop_name"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/tv_header"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_shop_badge"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexbox_order_shop_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop_name">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_image_fulfill"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:scaleType="fitCenter" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small"
            app:typographyWeight="reguler"
            tools:text="kota" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/separator_pre_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:gravity="center_vertical"
            android:text="@string/label_separator_line"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_pre_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:gravity="center_vertical"
            app:labelType="general_light_grey"
            tools:labelTitle="Pre Order 8 Hari" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/separator_alert_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:gravity="center_vertical"
            android:text="@string/label_separator_line"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_alert_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:gravity="center_vertical"
            app:labelType="general_light_grey"
            tools:labelTitle="This Is Incident Label" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/separator_free_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:gravity="center_vertical"
            android:text="@string/label_separator_line"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_free_shipping"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:scaleType="fitStart"
            tools:ignore="ContentDescription" />

    </com.google.android.flexbox.FlexboxLayout>

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_order_shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:visibility="gone"
        app:closeButtonVisibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flexbox_order_shop_info"
        app:tickerShapeType="loose"
        app:tickerType="warning" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/occ_custom_ticker_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:visibility="gone"
        app:card_type="clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticker_order_shop">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_R100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:src="@drawable/ic_system_status_error_normal_40"
                android:translationX="-8dp"
                android:translationY="-8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/occ_custom_ticker_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginBottom="@dimen/spacing_lvl3"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/occ_custom_ticker_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/occ_custom_ticker_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:paddingStart="@dimen/spacing_lvl4"
                android:text="@string/occ_custom_ticker_action"
                android:textColor="@color/Unify_G500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_6"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</androidx.constraintlayout.widget.ConstraintLayout>