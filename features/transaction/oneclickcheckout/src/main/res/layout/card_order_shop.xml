<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_order_shop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/lbl_osp_header"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_shop_badge"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_shop_badge"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iu_image_fulfill"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/dp_12"
        android:scaleType="fitCenter" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="small"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/separator_free_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/label_separator_line"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="small"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iu_free_shipping"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        android:scaleType="fitStart"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_shop_location_and_free_shipping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:constraint_referenced_ids="iu_image_fulfill,tv_shop_location,separator_free_shipping,iu_free_shipping"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="@dimen/spacing_lvl2"
        app:flow_horizontalStyle="packed"
        app:flow_verticalAlign="center"
        app:flow_verticalGap="@dimen/spacing_lvl2"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_shop_badge" />
</androidx.constraintlayout.widget.ConstraintLayout>