<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_address_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/img_location_state"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_detail"
            app:unify_image_corner_radius="0"
            app:unify_image_placeholder="@drawable/ic_pin_map_address"
            app:unify_image_type="rect"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toStartOf="@+id/lbl_main_address"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:typographyType="body_1"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_main_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@string/label_main_address"
            android:visibility="gone"
            app:labelType="general_dark_blue"
            app:layout_constraintBaseline_toBaselineOf="@+id/address_type"
            app:layout_constraintEnd_toStartOf="@+id/item_address_radio"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/address_type" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_16"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toStartOf="@+id/item_address_radio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_type"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_16"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toStartOf="@+id/item_address_radio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_name"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/address_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_6"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintEnd_toStartOf="@+id/item_address_radio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_number"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_pinpoint_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintBottom_toBottomOf="@+id/img_location_state"
            app:layout_constraintStart_toEndOf="@+id/img_location_state"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:id="@+id/item_address_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_24"
            android:clickable="false"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>


