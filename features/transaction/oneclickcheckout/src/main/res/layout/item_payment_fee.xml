<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_payment_fee_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/lbl_platform_fee"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/img_payment_fee_info"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:icon_name="INFORMATION"
        app:layout_constraintBottom_toBottomOf="@+id/tv_payment_fee_price_label"
        app:layout_constraintStart_toEndOf="@+id/tv_payment_fee_price_label"
        app:layout_constraintTop_toTopOf="@+id/tv_payment_fee_price_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_payment_fee_slash_price_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:gravity="end"
        android:visibility="invisible"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toStartOf="@id/tv_payment_fee_price_value"
        app:layout_constraintStart_toEndOf="@id/img_payment_fee_info"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_payment_fee_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="end"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_payment_fee_slash_price_value"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>