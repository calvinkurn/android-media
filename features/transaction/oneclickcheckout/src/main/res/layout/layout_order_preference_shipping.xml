<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/card_order_preference">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/ticker_shipping_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        app:card_type="clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Tile_T100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:src="@drawable/ic_system_status_announcement_normal_40"
                android:translationX="-8dp"
                android:translationY="-8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/ticker_shipping_promo_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ticker_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/ticker_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16"
                android:text="@string/label_pilih"
                android:textColor="@color/unify_G500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_6"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticker_shipping_promo"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/Neutral_N700_68"
        app:drawableRightCompat="@drawable/ic_keyboard_arrow_down_grey_20dp"
        app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_name"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_courier_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/label_kurir"
        android:textColor="@color/Neutral_N700_96"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_duration"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_slash_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/Neutral_N700_68"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_courier_lbl"
        app:typographyType="small"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/Neutral_N700_68"
        android:visibility="gone"
        app:drawableRightCompat="@drawable/ic_keyboard_arrow_down_grey_20dp"
        app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_slash_price"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="@color/Neutral_N700_96"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_keyboard_arrow_down_grey_20dp"
        app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_courier"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_8"
        android:textColor="@color/Red_R600"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/tv_shipping_change_duration"
        app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_price"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_change_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_0"
        android:text="@string/lbl_change_template"
        android:textColor="@color/Green_G500"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_shipping_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticker_shipping_promo"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>