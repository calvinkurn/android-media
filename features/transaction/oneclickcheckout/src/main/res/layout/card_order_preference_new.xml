<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.ContainerUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:container_color="GREEN">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_card_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:text="Template Beli Langsung"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lbl_main_preference"
            app:layout_constraintStart_toStartOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_main_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:text="Utama"
            app:labelType="general_light_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_choose_preference"
            app:layout_constraintStart_toEndOf="@+id/tv_card_header"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_choose_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:paddingTop="@dimen/unify_space_12"
            android:text="Tambah Template"
            android:textColor="@color/Unify_G500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lbl_main_preference"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</com.tokopedia.unifycomponents.ContainerUnify>