<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/item_view_promo_detail_header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_white_outline_grey_except_bottom"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                app:srcCompat="@drawable/ic_time_stopwatch"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/label_period_promo_loyalty_module"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/grey_600" />

            <TextView
                android:id="@+id/tv_promo_detail_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/grey_800"
                android:textSize="@dimen/sp_14"
                tools:text="20 - 30 Juni 2017" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/grey_200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                app:srcCompat="@drawable/ic_money_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_promo_detail_min_transaction_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/label_min_transaction_promo_loyalty_module"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/grey_600" />

            <TextView
                android:id="@+id/tv_promo_detail_min_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/grey_800"
                android:textSize="@dimen/sp_14"
                tools:text="Rp. 200.000" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>