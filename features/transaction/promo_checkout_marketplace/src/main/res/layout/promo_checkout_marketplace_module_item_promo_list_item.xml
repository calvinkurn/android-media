<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-4dp"
    android:background="@color/Unify_N0"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_12">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/card_promo_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-4dp"
        android:background="@color/Unify_N0"
        android:orientation="vertical"
        android:padding="@dimen/dp_12">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintCircleRadius="@dimen/dp_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/container_image_promo_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_promo_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toStartOf="@+id/image_select_promo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_image_promo_item"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Gratis Ongkir hingga Rp1.200.000" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_promo_code_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="@string/label_prefix_attempted_promo_code"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_promo_item_title"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_promo_code_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                app:layout_constraintStart_toEndOf="@+id/label_promo_code_info"
                app:layout_constraintTop_toBottomOf="@+id/label_promo_item_title"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="HHBSFDUJKSBS" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_promo_item_error_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                app:layout_constraintEnd_toStartOf="@+id/image_select_promo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_promo_code_info"
                app:lineHeight="@dimen/dp_18"
                app:typographyType="body_3"
                tools:text="Tambah Rp10.000 untuk pakai promo aaaa aaa Tambah Rp10.000 untuk pakai promo. Tambah Rp10.000 untuk pakai promo." />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_promo_item_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_promo_item_error_message"
                app:typographyType="body_3"
                tools:text="Berakhir 20 menit lagi! Lihat Detail" />

            <ImageView
                android:id="@+id/image_select_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check_green" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</LinearLayout>