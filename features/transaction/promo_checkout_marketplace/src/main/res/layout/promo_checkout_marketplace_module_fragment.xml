<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="@dimen/dp_0">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:minHeight="?attr/actionBarSize"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp" />

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:id="@+id/layout_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/container_action_bottom"
            android:layout_below="@+id/app_bar_layout">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/promo_checkout_marketplace_module_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <LinearLayout
                android:id="@+id/header_promo_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Unify_N0"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_12">

                    <ImageView
                        android:id="@+id/section_image_promo_list_header"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_badge_shop_official" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/section_label_promo_list_header_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:ellipsize="end"
                        app:layout_constraintStart_toEndOf="@+id/section_image_promo_list_header"
                        app:layout_constraintTop_toTopOf="parent"
                        app:typographyType="body_2"
                        app:typographyWeight="bold"
                        tools:text="Kupon saya 111" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/section_label_promo_list_header_sub_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_8"
                        app:layout_constraintStart_toEndOf="@+id/section_image_promo_list_header"
                        app:layout_constraintTop_toBottomOf="@+id/section_label_promo_list_header_title"
                        app:typographyType="body_3"
                        tools:text="Hanya bisa pilih satu aja" />

                    <ImageView
                        android:id="@+id/section_image_chevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/unify_chips_ic_chevron_normal" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/v_shadow_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4"
                    android:layout_gravity="top"
                    android:background="@drawable/promo_checkout_marketplace_module_shadow_bottom" />

            </LinearLayout>

            <View
                android:id="@+id/v_shadow_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3"
                android:layout_gravity="bottom"
                android:background="@drawable/bottom_sheet_shadow" />

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_action_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/Unify_N0"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16"
            android:visibility="gone"
            tools:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_total_promo_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center_vertical"
                android:text="@string/label_promo_page_summary_benefit_title"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_total_promo_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:typographyType="heading_4"
                app:typographyWeight="bold"
                tools:text="Rp66.000" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/button_apply_promo"
                android:layout_width="@dimen/dp_165"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unifyButtonVariant="filled"
                tools:text="Pakai Promo (3)" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/button_apply_no_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackground"
                android:text="@string/label_button_buy_without_promo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unifyButtonVariant="filled"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tokopedia.globalerror.GlobalError
            android:id="@+id/layout_global_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar_layout"
            android:background="@color/Unify_N0"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="gone" />

    </RelativeLayout>

    <include layout="@layout/promo_checkout_marketplace_module_bottom_sheet_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>