<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_promo_list_header"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_promo_list_header"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/icon_promo_list_header"
            app:layout_constraintWidth_max="100dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_promo_list_header_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/Unify_NN950_96"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_promo_list_header"
            app:layout_constraintEnd_toStartOf="@id/label_promo_list_header_sub_title"
            tools:text="Kupon saya 111" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_promo_list_header_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            app:layout_constraintHorizontal_weight="1"
            tools:text="Pilih satu aja"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/label_promo_list_header_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>