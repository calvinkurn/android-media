<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="start"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_promo_list_header"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_promo_list_header"
        android:layout_width="48dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_list_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Kupon saya 111" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_list_header_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:gravity="center_vertical"
        app:typographyType="body_3"
        tools:text="Pilih satu aja" />

</LinearLayout>