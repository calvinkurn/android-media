<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:orientation="horizontal"
    android:padding="@dimen/dp_16">

    <ImageView
        android:id="@+id/image_promo_list_header"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_badge_shop_official" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_list_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:ellipsize="end"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toEndOf="@+id/image_promo_list_header"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Kupon saya 111" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_list_header_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintStart_toEndOf="@+id/image_promo_list_header"
        app:layout_constraintTop_toBottomOf="@+id/label_promo_list_header_title"
        app:typographyType="body_3"
        tools:text="Hanya bisa pilih satu aja" />

    <ImageView
        android:id="@+id/image_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unify_chips_ic_chevron_normal" />

</androidx.constraintlayout.widget.ConstraintLayout>