<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:orientation="horizontal"
    android:paddingEnd="0dp"
    android:paddingRight="0dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/button_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_16"
        app:icon_color_light_disabled="@color/Unify_N200"
        app:icon_color_light_enable="@color/Unify_N700"
        app:icon_color_night_disabled="@color/Unify_N200"
        app:icon_color_night_enable="@color/Unify_N0"
        app:icon_enable_state="true"
        app:icon_name="ARROW_BACK" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/button_back"
        android:layout_toRightOf="@+id/button_back"
        android:text="Pakai Promo"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/button_reset_promo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:text="Reset Promo"
        android:textColor="@color/Unify_G500"
        app:typographyType="heading_5" />


</RelativeLayout>