<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_promo_last_seen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_lvl2"
    android:paddingTop="@dimen/layout_lvl2"
    android:paddingRight="@dimen/layout_lvl2"
    android:visibility="gone"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/bottom_sheet_default_peek"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl2"
        android:visibility="visible">

        <ImageView
            android:id="@+id/bottom_sheet_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/unify_bottomsheet_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/bottom_sheet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/label_promo_last_seen_title"
            android:textColor="@color/light_N700_96"
            app:layout_constraintStart_toEndOf="@+id/bottom_sheet_close"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>