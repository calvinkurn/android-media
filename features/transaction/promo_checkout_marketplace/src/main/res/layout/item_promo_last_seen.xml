<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_6"
    android:paddingBottom="@dimen/dp_6">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/n_700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Gratis Ongkir hingga Rp1.200.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_code_prefix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_promo_code"
        app:layout_constraintBottom_toBottomOf="@+id/label_promo_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_promo_item_title"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/n_700_96"
        app:layout_constraintStart_toEndOf="@+id/label_promo_code_prefix"
        app:layout_constraintTop_toBottomOf="@+id/label_promo_item_title"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="TOKOPEDIAXOVO" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_diagonal" />

</androidx.constraintlayout.widget.ConstraintLayout>