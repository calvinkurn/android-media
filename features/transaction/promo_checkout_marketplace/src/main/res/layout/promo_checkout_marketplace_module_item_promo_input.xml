<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/text_field_input_promo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_apply_promo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_text_field_input_type="text"
        app:unify_text_field_label="@string/label_promo_input_hint"
        app:unify_text_field_label_static="false"
        app:unify_text_field_placeholder="@string/label_promo_input_hint" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/button_apply_promo"
        android:layout_width="@dimen/dp_110"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_button_apply_manual_input_promo"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_field_input_promo"
        app:layout_constraintTop_toTopOf="@id/text_field_input_promo"
        app:unifyButtonVariant="filled"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>