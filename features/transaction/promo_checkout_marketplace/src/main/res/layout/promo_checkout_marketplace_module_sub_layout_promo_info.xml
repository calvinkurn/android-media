<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_promo_info"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect"
        tools:srcCompat="@drawable/ic_action_x" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_promo_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/image_promo_info"
        app:layout_constraintStart_toEndOf="@+id/image_promo_info"
        app:layout_constraintTop_toTopOf="@+id/image_promo_info"
        app:typographyType="body_3"
        tools:text="Khusus pengiriman GoSend" />

</androidx.constraintlayout.widget.ConstraintLayout>