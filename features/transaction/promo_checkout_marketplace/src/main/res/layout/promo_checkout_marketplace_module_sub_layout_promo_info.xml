<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_promo_info"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_promo_info" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_promo_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:textColor="@color/Unify_NN950_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_promo_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="12dp"
        app:typographyType="body_3"
        tools:text="Khusus Pengiriman Grab Instant, Grab SameDay, JNE YES, JNE Reguler, JNE OKE" />

</androidx.constraintlayout.widget.ConstraintLayout>