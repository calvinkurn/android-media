<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Gratis Ongkir hingga Rp1.200.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_code_prefix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/label_promo_code"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/label_promo_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_promo_item_title"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_promo_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toEndOf="@+id/label_promo_code_prefix"
        app:layout_constraintTop_toBottomOf="@+id/label_promo_item_title"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="TOKOPEDIAXOVO" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/label_promo_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/label_promo_item_title"
        app:srcCompat="@drawable/promo_checkout_matketplace_module_ic_arrow_diagonal"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerUnify"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/label_promo_code" />

</androidx.constraintlayout.widget.ConstraintLayout>