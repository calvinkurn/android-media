<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Cek ringkasan belanjamu, yuk"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_item_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_header"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Total Harga (10 Barang)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_item_price_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_checkout_cost_item_price_title"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_header"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Rp2.910.000,00 Rp2.905.000,00" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_shipping_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Total Ongkos Kirim"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_item_price_value"
        app:typographyType="display_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_shipping_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_checkout_cost_shipping_title"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_item_price_value"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Rp2.910.000,00 Rp2.905.000,00" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_platform_fee_label"
        android:layout_width="140dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_shipping_value"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_platform_fee_value"
        android:layout_width="48dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/loader_platform_fee_label"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_shipping_value"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_platform_fee_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        app:closeButtonVisibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loader_platform_fee_label"
        app:tickerShapeType="loose"
        app:tickerType="warning" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_platform_fee_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ticker_platform_fee_info"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Total Biaya Jasa Aplikasi" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_platform_fee_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_checkout_cost_platform_fee_title"
        app:layout_constraintTop_toBottomOf="@id/ticker_platform_fee_info"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Rp2.910.000,00 Rp2.905.000,00" />

    <LinearLayout
        android:id="@+id/ll_checkout_cost_others"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_platform_fee_value" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_others_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_platform_fee_value"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Total Lainnya" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_others_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_checkout_cost_others_title"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_platform_fee_value"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Rp2.910.000,00 Rp2.905.000,00" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/v_checkout_cost_others_expanded_separator"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:background="@color/Unify_NN300"
        app:layout_constraintBottom_toBottomOf="@id/ll_checkout_cost_others_expanded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_others_title" />

    <LinearLayout
        android:id="@+id/ll_checkout_cost_others_expanded"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_checkout_cost_others_expanded_separator"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_cost_others_title" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/v_divider_cost_total"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_checkout_cost_others_expanded" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_total_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_divider_cost_total"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        android:text="Total Belanja" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_cost_total_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="end"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_checkout_cost_total_title"
        app:layout_constraintTop_toBottomOf="@id/v_divider_cost_total"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Rp2.910.000,00" />

</androidx.constraintlayout.widget.ConstraintLayout>