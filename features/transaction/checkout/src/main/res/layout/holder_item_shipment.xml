<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:foreground="?selectableItemBackground"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_12">

    <TextView
        android:id="@+id/tv_shipment_type"
        style="@style/TextMidNormalBlack70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        tools:text="Same Day"/>

    <TextView
        android:id="@+id/tv_price_range"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_shipment_type"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@+id/tv_shipment_type"
        android:layout_toRightOf="@+id/tv_shipment_type"
        android:lineSpacingExtra="4sp"
        tools:text="Mulai dari Rp 15.000"/>

    <TextView
        android:id="@+id/tv_delivery_time_range"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shipment_type"
        android:layout_marginBottom="@dimen/dp_12"
        android:lineSpacingExtra="4sp"
        tools:text="(6 - 8 jam pengiriman)"/>

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_delivery_time_range"
        android:background="@drawable/bg_line_separator"/>

    <ImageButton
        android:id="@+id/img_bt_check"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/ic_check"
        android:visibility="gone"/>

</RelativeLayout>