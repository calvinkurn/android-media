<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/holder_item_cart_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/separator_color" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_3"
        android:textStyle="bold"
        tools:text="@string/clash_bottomsheet_previous_potential_promo_origin2" />

    <TextView
        android:id="@+id/tv_cashback_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:textColor="@color/clash_potential_desc"
        tools:text="@string/clash_bottomsheet_previous_potential_promo_desc2" />


</LinearLayout>