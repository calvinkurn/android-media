<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    android:background="@drawable/bg_warning"
    android:padding="@dimen/dp_16">

    <ImageView
        android:id="@+id/image_cod_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_cod" />

    <!--TODO : Use Html from to get inline style -->
    <TextView
        android:id="@+id/text_cod_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toEndOf="@id/image_cod_icon"
        android:layout_toRightOf="@id/image_cod_icon"
        android:fontFamily="sans-serif"
        android:text="Pilih “Bayar di Tempat” untuk pembayaran lewat kurir saat pesanan tiba. Pelajari selengkapnya"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>