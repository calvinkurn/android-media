<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/checkout_module_bg_warning"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/text_cod_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:fontFamily="sans-serif"
            android:textColor="@color/Unify_N700_44"
            android:textSize="@dimen/sp_12"
            tools:text="Pilih “Bayar di Tempat” untuk pembayaran lewat kurir saat pesanan tiba" />

        <TextView
            android:id="@+id/text_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_cod_description"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:fontFamily="sans-serif-medium"
            android:text="@string/hyperlink_learn_more"
            android:textColor="@color/Unify_G400"
            android:textSize="@dimen/sp_12"
            tools:text="Pelajari selengkapnya" />

    </RelativeLayout>
</FrameLayout>