<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_200"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/dp_3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextSmallMediumBlack38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checkout_module_label_penjual"/>

                    <TextView
                        android:id="@+id/sender_name"
                        style="@style/TextSmallMediumBlack70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Adidas"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/empty_photo"
                        tools:ignore="ContentDescription"/>

                    <TextView
                        android:id="@+id/product_name"
                        style="@style/TextMidMediumBlack70"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        tools:text="Kaos Adidas Camo Tongue Tee... White and Red, XS"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            app:cardCornerRadius="@dimen/dp_0"
            app:cardElevation="@dimen/dp_3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/TextSmallNormalBlack38"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_item_count"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/decrease_quantity"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/bg_button_counter_minus"
                            tools:ignore="ContentDescription"/>

                        <EditText
                            android:id="@+id/quantity_field"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="7"
                            android:textSize="16sp"
                            tools:ignore="LabelFor"/>

                        <ImageView
                            android:id="@+id/increase_quantity"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/bg_button_counter_plus"
                            tools:ignore="ContentDescription"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quantity_error_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/quantity_error_text_view"
                        style="@style/TextSmallError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jumlah barang terlalu banyak"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/empty_notes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/label_notes_for_seller"
                        style="@style/TextSmallNormalBlack38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_note_for_seller"/>

                    <TextView
                        android:id="@+id/insert_notes_button"
                        style="@style/TextSmallMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@id/label_notes_for_seller"
                        android:layout_toRightOf="@id/label_notes_for_seller"
                        android:text="@string/label_button_add_note"
                        android:textColor="@color/tkpd_main_green"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@id/label_notes_for_seller"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/grey_400"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/notes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        style="@style/TextSmallNormalBlack38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_note_for_seller"/>

                    <EditText
                        android:id="@+id/notes_edit_text"
                        style="@style/TextSmallNormalBlack70"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        tools:ignore="LabelFor,TextFields"
                        tools:text="Tolong segera dikirim ya gan. Saya tunggu, soalnya ini barang sangat penting dan mahal"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/note_error_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_error_note_too_long"
                    android:textColor="@color/red_500"
                    android:textSize="@dimen/sp_11"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/address_title"
                            style="@style/TextSmallNormalBlack38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Alamat Kantor"/>

                        <TextView
                            android:id="@+id/address_receiver_name"
                            style="@style/TextSmallMediumBlack54"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="5sp"
                            tools:text="Agus Maulana"/>

                        <TextView
                            android:id="@+id/address"
                            style="@style/TextSmallNormalBlack54"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="6sp"
                            tools:text="Jl. Letjen S. Parman Kav.77, Wisma 77 Tower 2, Tokopedia Lt. 2, Jakarta, 0817 1234 5678"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center_vertical|end">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:src="@drawable/ic_chevron_right_grey_checkout_module"
                            android:tint="#999999"
                            tools:ignore="ContentDescription"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/choose_address_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/TextSmallNormalBlack54"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_shipment"/>

                        <TextView
                            style="@style/TextSmallMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/label_choose_address"
                            android:textColor="@color/tkpd_main_green"/>

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginStart="@dimen/dp_8"
                            android:src="@drawable/ic_chevron_right_grey_checkout_module"
                            android:tint="@color/tkpd_main_green"
                            tools:ignore="ContentDescription"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/add_address_error_warning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@string/label_error_choose_address"
                        android:textColor="@color/red_500"
                        android:textSize="@dimen/sp_11"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/disabled_save_changes_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/grey_400"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/checkout_module_label_simpan"
        android:textColor="@color/grey_600"
        android:textSize="@dimen/sp_13"/>

    <TextView
        android:id="@+id/save_changes_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/medium_green_button_rounded"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/checkout_module_label_simpan"
        android:textColor="@color/white"
        android:textSize="13sp"/>

</RelativeLayout>