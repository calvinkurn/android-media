<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_benefit_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="24dp"
        android:text="Hadiah"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_product_separator_benefit"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:visibility="gone" />

    <FrameLayout
        android:id="@+id/iv_product_image_frame_benefit"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:foreground="@drawable/checkout_module_bg_product_image"
        app:layout_constraintStart_toEndOf="@id/v_product_separator_benefit"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_benefit_header">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iv_product_image_benefit"
            android:layout_width="56dp"
            android:layout_height="56dp"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_name_benefit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_image_frame_benefit"
        app:layout_constraintTop_toTopOf="@id/iv_product_image_frame_benefit"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Kaos Adidas Camo Tongue Tee White  gsf fsu gfsah hjsfj gsfugshj sjbfj hsjfh hsfjh vhsfh bjsf bjsfbjRed, XSbjsf bjsfbjRed, XS" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_price_benefit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="@id/tv_product_name_benefit"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name_benefit"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name_benefit"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="1 x Rp200.000" />

    <View
        android:id="@+id/v_product_separator_benefit"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/checkout_v_bunding_separator"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>