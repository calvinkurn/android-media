<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_product_policies_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_product_price"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_toEndOf="@id/iv_product_image"
    android:layout_toRightOf="@id/iv_product_image">

    <TextView
        android:id="@+id/tv_cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:background="@drawable/bg_cashback"
        android:fontFamily="sans-serif"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:textColor="#42b549"
        android:textSize="@dimen/sp_10"
        android:textStyle="normal"
        tools:ignore="SmallSp"
        tools:text="Cashback 5%" />

    <TextView
        android:id="@+id/tv_pre_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:background="@drawable/bg_pre_order"
        android:fontFamily="sans-serif"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:text="@string/label_po"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_10"
        android:textStyle="normal"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/iv_free_return_icon"
        android:layout_width="@dimen/dp_16"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_free_return"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_free_return_label"
        style="@style/TextSmallNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="4dp"
        android:text="@string/label_free_return"
        android:textColor="@color/font_black_secondary_54"
        android:visibility="gone" />

</LinearLayout>