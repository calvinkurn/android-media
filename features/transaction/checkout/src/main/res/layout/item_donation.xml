<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    android:foreground="?selectableItemBackground"
    android:paddingStart="9dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cb_donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:paddingTop="6dp"
        android:paddingEnd="4dp"
        android:paddingBottom="6dp"
        app:layout_flexShrink="0" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_donation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="TopDonasi100 donasi" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/img_donation_info"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:paddingStart="@dimen/spacing_lvl2"
        android:paddingEnd="@dimen/spacing_lvl2"
        app:icon_name="INFORMATION"
        app:layout_flexShrink="0" />

</com.google.android.flexbox.FlexboxLayout>