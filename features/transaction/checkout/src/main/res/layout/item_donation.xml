<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:foreground="?selectableItemBackground"
    android:paddingLeft="@dimen/dp_9"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16">

    <CheckBox
        android:id="@+id/cb_donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6"
        android:paddingRight="@dimen/dp_4"
        android:button="@drawable/ic_cart_check_box" />

    <TextView
        android:id="@+id/tv_donation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableRight="@drawable/info_icon"
        android:drawablePadding="@dimen/dp_8"
        tools:text="TopDonasi100 donasi " />

</LinearLayout>