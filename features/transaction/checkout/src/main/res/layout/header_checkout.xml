<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pengiriman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        tools:visibility="gone" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_header_address_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim ke"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_header_address_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apartemen Sudirman"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_header_address_header"
        app:typographyType="display_1"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>