<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_200"
                android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/dp_3">

        <LinearLayout
            android:id="@+id/sticky_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_300"/>

            <LinearLayout
                android:id="@+id/total_payment_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    style="@style/TextSmallNormalBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_payment_total"/>

                <TextView
                    android:id="@+id/total_payment_text_view"
                    style="@style/TextMidNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="-"
                    tools:ignore="HardcodedText"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_promo_message"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:visibility="gone"
                tools:text="Anda mendapat gratis ongkir Rp20.000"
                tools:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_300"/>

            <TextView
                android:id="@+id/confirm_payment_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/bg_button_disabled"
                android:gravity="center"
                android:text="@string/label_button_choose_payment_method"
                android:textAllCaps="false"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/sp_13"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_shipment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/card_view_container"/>

</RelativeLayout>