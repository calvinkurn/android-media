<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shipping_options_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_insurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:paddingStart="9dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp">

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/cb_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/content_desc_cb_insurance"
            android:paddingTop="6dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_label_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_shipment_insurance"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/img_insurance_info"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:contentDescription="@string/content_desc_img_insurance_info"
            android:foregroundGravity="center_vertical"
            android:paddingStart="@dimen/spacing_lvl2"
            android:paddingEnd="@dimen/spacing_lvl2"
            app:icon_name="INFORMATION" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dropshipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/cb_dropshipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingTop="6dp"
            android:paddingEnd="4dp"
            android:paddingBottom="6dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_dropshipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_dropshipper_new"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/img_dropshipper_info"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:paddingStart="@dimen/spacing_lvl2"
            android:paddingEnd="@dimen/spacing_lvl2"
            app:icon_name="INFORMATION" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dropshipper_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/text_input_layout_shipper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            app:text_field_input_type="text"
            app:text_field_label="@string/label_hint_cart_item_dropshipper_name"
            app:text_field_label_static="false"
            app:text_field_placeholder="@string/label_hint_cart_item_dropshipper_name" />

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/text_input_layout_shipper_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            app:text_field_input_type="phone"
            app:text_field_label="@string/label_hint_cart_item_dropshipper_phone_number"
            app:text_field_label_static="false"
            app:text_field_placeholder="@string/label_hint_cart_item_dropshipper_phone_number" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/Unify_N100" />

</LinearLayout>