<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_shipping_options_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_insurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8">

        <CheckBox
            android:id="@+id/cb_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TransactionCheckbox" />

        <CheckBox
            android:id="@+id/cb_insurance_disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TransactionCheckboxDisabled" />

        <TextView
            android:id="@+id/tv_label_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_shipment_insurance" />

        <ImageView
            android:id="@+id/img_insurance_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:src="@drawable/info_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dropshipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_4"
        tools:visibility="visible">

        <CheckBox
            android:id="@+id/cb_dropshipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/TransactionCheckbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_dropshipper_new" />

        <ImageView
            android:id="@+id/img_dropshipper_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_4"
            android:src="@drawable/info_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dropshipper_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/margin_ms"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_shipper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:hint="@string/label_hint_cart_item_dropshipper_name"
            app:hintTextAppearance="@style/transactionTextInputLayout">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_shipper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-4dp"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:textSize="@dimen/sp_14"
                android:theme="@style/TransactionEditText"
                app:backgroundTint="@color/grey_300" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_shipper_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:hint="@string/label_hint_cart_item_dropshipper_phone_number"
            app:hintTextAppearance="@style/transactionTextInputLayout">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_shipper_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-4dp"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:textSize="@dimen/sp_14"
                android:theme="@style/TransactionEditText"
                app:backgroundTint="@color/grey_300" />
        </android.support.design.widget.TextInputLayout>

        <EditText
            style="@style/TextMid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:imeOptions="actionDone"
            android:inputType="phone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/separator_color" />

</LinearLayout>