<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shipping_options_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_prioritas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_9"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_4">

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/cb_prioritas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_6" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_label_prioritas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cb_prioritas"
            android:padding="@dimen/dp_4"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            android:text="@string/label_order_prioritas" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/img_prioritas_info"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_alignBottom="@+id/tv_label_prioritas"
            android:layout_toEndOf="@+id/tv_label_prioritas"
            android:foregroundGravity="center_vertical"
            android:paddingStart="@dimen/spacing_lvl2"
            android:paddingEnd="@dimen/spacing_lvl2"
            app:icon_name="INFORMATION" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_order_prioritas_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_label_prioritas"
            android:layout_toEndOf="@+id/cb_prioritas"
            android:padding="@dimen/dp_4"
            android:text="@string/label_hardcoded_order_prioritas_info"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_prioritas_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/checkout_module_border_rectangle_yellow_checkout"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        tools:ignore="UselessParent"
        tools:visbility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_prioritas_ticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            android:lines="2"
            tools:text="@string/label_hardcoded_prioritas_ticker" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_insurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:paddingStart="@dimen/dp_9"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_4">

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/cb_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:contentDescription="@string/content_desc_cb_insurance"
            android:paddingTop="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_6" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_label_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_shipment_insurance"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/img_insurance_info"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:contentDescription="@string/content_desc_img_insurance_info"
            android:foregroundGravity="center_vertical"
            android:paddingStart="@dimen/spacing_lvl2"
            android:paddingEnd="@dimen/spacing_lvl2"
            app:icon_name="INFORMATION" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dropshipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/cb_dropshipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:paddingTop="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_6" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_dropshipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_dropshipper_new"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/img_dropshipper_info"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:paddingStart="@dimen/spacing_lvl2"
            android:paddingEnd="@dimen/spacing_lvl2"
            app:icon_name="INFORMATION" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dropshipper_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/text_input_layout_shipper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_8"
            app:text_field_input_type="text"
            app:text_field_label="@string/label_hint_cart_item_dropshipper_name"
            app:text_field_label_static="false"
            app:text_field_placeholder="@string/label_hint_cart_item_dropshipper_name" />

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/text_input_layout_shipper_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_8"
            app:text_field_input_type="phone"
            app:text_field_label="@string/label_hint_cart_item_dropshipper_phone_number"
            app:text_field_label_static="false"
            app:text_field_placeholder="@string/label_hint_cart_item_dropshipper_phone_number" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/Unify_N100" />

</LinearLayout>