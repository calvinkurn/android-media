<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shipping_options_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_prioritas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8">

        <CheckBox
            android:id="@+id/cb_prioritas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:paddingRight="@dimen/dp_4"
            android:button="@drawable/ic_cart_check_box"
            android:layout_alignParentStart="true" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_label_prioritas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cb_prioritas"
            android:padding="@dimen/dp_4"
            android:text="@string/label_order_prioritas"
            android:layout_toEndOf="@+id/cb_prioritas" />

        <ImageView
            android:id="@+id/img_prioritas_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_label_prioritas"
            android:layout_toRightOf="@+id/tv_label_prioritas"
            android:foregroundGravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:src="@drawable/info_icon"
            android:layout_toEndOf="@+id/tv_label_prioritas" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_order_prioritas_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_label_prioritas"
            android:layout_toRightOf="@+id/cb_prioritas"
            android:padding="@dimen/dp_4"
            android:text="@string/label_hardcoded_order_prioritas_info"
            android:textSize="@dimen/sp_12"
            app:textViewTheme="lightSecondary"
            android:layout_toEndOf="@+id/cb_prioritas" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_prioritas_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/checkout_module_border_rectangle_yellow_checkout"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        tools:visbility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_prioritas_ticker"
                style="@style/TextSmall"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7sp"
                tools:text="@string/label_hardcoded_prioritas_ticker" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_insurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_9"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8">

        <CheckBox
            android:id="@+id/cb_insurance"
            android:contentDescription="@string/cb_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:paddingRight="@dimen/dp_4"
            android:button="@drawable/ic_cart_check_box" />

        <CheckBox
            android:id="@+id/cb_insurance_disabled"
            android:contentDescription="@string/cb_insurance_disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:paddingRight="@dimen/dp_4"
            android:button="@drawable/ic_cart_check_box"
            android:enabled="false"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_label_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_shipment_insurance"
            app:typographyType="body_2"
            app:typographyWeight="reguler"/>

        <ImageView
            android:id="@+id/img_insurance_info"
            android:contentDescription="@string/img_insurance_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="center_vertical"
            android:padding="@dimen/dp_4"
            android:src="@drawable/info_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dropshipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_4"
        tools:visibility="visible">

        <CheckBox
            android:id="@+id/cb_dropshipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:paddingRight="@dimen/dp_4"
            android:button="@drawable/ic_cart_check_box" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_dropshipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_dropshipper_new"
            app:typographyType="body_2"
            app:typographyWeight="reguler"/>

        <ImageView
            android:id="@+id/img_dropshipper_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_4"
            android:src="@drawable/info_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dropshipper_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_shipper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:hint="@string/label_hint_cart_item_dropshipper_name"
            app:hintTextAppearance="@style/transactionTextInputLayout">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_shipper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-4dp"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:textSize="@dimen/sp_14"
                android:theme="@style/TransactionEditText"
                app:backgroundTint="@color/grey_300" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_shipper_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:hint="@string/label_hint_cart_item_dropshipper_phone_number"
            app:hintTextAppearance="@style/transactionTextInputLayout">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_shipper_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-4dp"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:textSize="@dimen/sp_14"
                android:theme="@style/TransactionEditText"
                app:backgroundTint="@color/grey_300" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            style="@style/TextMid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:imeOptions="actionDone"
            android:inputType="phone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_shipment_info_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/checkout_module_border_rectangle_yellow_checkout"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        tools:visbility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_ticker_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7sp"
                tools:text="@string/label_hardcoded_courier_ticker"
                app:typographyType="body_3"
                app:typographyWeight="reguler"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/separator_color" />

</LinearLayout>