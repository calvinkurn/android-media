<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pesanan 1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_order_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="â€¢" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_checkout_order_badge"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_order_number"
        app:unify_image_type="rect"
        tools:src="@drawable/ic_badge_shop_official"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_order_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_checkout_order_badge"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_order_number"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Dilayani tokopedia"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_free_shipping"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:gravity="center_vertical"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_checkout_order_name"
        app:layout_maxWidth="100dp"
        tools:src="@color/Unify_G500" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_checkout_shop_badge"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_order_name"
        app:unify_image_type="rect"
        tools:src="@drawable/ic_badge_shop_official"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_checkout_shop_badge"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_order_name"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Toko Adidas"
        tools:visibility="visible" />

    <View
        android:id="@+id/v_bundling_product_separator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/Unify_NN50"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_shop_name"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_product_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toEndOf="@+id/v_bundling_product_separator"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_shop_name"
        tools:ignore="ContentDescription"
        tools:src="@color/Unify_G400" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_image"
        app:layout_constraintTop_toTopOf="@id/iv_product_image"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Kaos Adidas Camo Tongue Tee... White  gsf fsu gfsah hjsfj gsfugshj sjbfj hsjfh hsfjh vhsfh bjsf bjsfbjRed, XS" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_variant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@+id/tv_product_name"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Biru, XXL" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="@id/tv_product_name"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@+id/text_variant"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:ignore="RtlSymmetry"
        tools:text="1 x Rp200.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_optional_note_to_seller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price"
        app:typographyType="paragraph_3"
        app:typographyWeight="reguler"
        tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim barangnya gan! afadf asfsaf safas safasfsaf asfasf safasf"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>