<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_bmgm_product_image"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@color/Unify_G400" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bmgm_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_bmgm_product_image"
        app:layout_constraintTop_toTopOf="@id/iv_bmgm_product_image"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Kaos Adidas Camo Tongue Tee White  gsf fsu gfsah hjsfj gsfugshj sjbfj hsjfh hsfjh vhsfh bjsf bjsfbjRed, XSbjsf bjsfbjRed, XS" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bmgm_variant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@+id/tv_bmgm_product_name"
        app:layout_constraintStart_toStartOf="@+id/tv_bmgm_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_bmgm_product_name"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Biru, XXL" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bmgm_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="@id/tv_bmgm_product_name"
        app:layout_constraintStart_toStartOf="@+id/tv_bmgm_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_bmgm_variant"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="1 x Rp200.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bmgm_optional_note_to_seller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="@id/tv_bmgm_product_price"
        app:layout_constraintStart_toStartOf="@+id/tv_bmgm_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_bmgm_product_price"
        app:typographyType="paragraph_3"
        app:typographyWeight="reguler"
        tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim barangnya gan! afadf asfsaf safas safasfsaf asfasf safasf"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_checkout_bmgm_product_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="iv_bmgm_product_image,tv_bmgm_product_price,tv_bmgm_optional_note_to_seller" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_bmgm_addons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Tambahan"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier_checkout_bmgm_product_info"
        app:typographyType="display_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_checkout_bmgm_addons_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:paddingStart="8dp"
        android:text="Lihat Semua"
        android:textColor="@color/Unify_GN500"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/tv_checkout_bmgm_addons"
        app:layout_constraintTop_toTopOf="@id/tv_checkout_bmgm_addons"
        app:typographyType="display_3"
        app:typographyWeight="bold" />

    <LinearLayout
        android:id="@+id/ll_addon_bmgm_product_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout_bmgm_addons" />

</androidx.constraintlayout.widget.ConstraintLayout>