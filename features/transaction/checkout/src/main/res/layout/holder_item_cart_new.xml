<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow"
    android:orientation="vertical">

    <include layout="@layout/layout_item_warning_and_error" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_label_shop_name"
            style="@style/TextSmallMediumBlack38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5sp"
            android:paddingLeft="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:text="@string/label_seller"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_shop_name"
            style="@style/TextSmallMediumBlack70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toEndOf="@id/tv_label_shop_name"
            android:layout_toRightOf="@id/tv_label_shop_name"
            android:lineSpacingExtra="5sp"
            tools:ignore="RelativeOverlap"
            tools:text="Loaa Store" />

        <ImageView
            android:id="@+id/btn_delete_cart"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            app:srcCompat="@drawable/ic_delete_cart"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <ImageView
                android:id="@+id/iv_image_product"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="4dp"
                tools:ignore="ContentDescription"
                tools:src="@drawable/empty_photo" />

            <ImageView
                android:id="@+id/iv_image_wishlist"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignEnd="@+id/iv_image_product"
                android:layout_alignRight="@+id/iv_image_product"
                android:layout_alignTop="@+id/iv_image_product"
                android:layout_marginEnd="-5dp"
                android:layout_marginRight="-5dp"
                android:layout_marginTop="-5dp"
                android:background="@drawable/bg_circle_white"
                android:padding="5dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_wishlist_unchecked" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_image_product"
                android:layout_toRightOf="@id/iv_image_product"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingStart="@dimen/dp_8">

                <TextView
                    android:id="@+id/tv_product_name"
                    style="@style/TextMidMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="Tas organizer sepeda double container" />

                <include
                    android:id="@+id/product_properties"
                    layout="@layout/layout_cart_item_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_product_name"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tv_product_price"
                    style="@style/TextMidMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_properties"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textColor="@color/orange_red"
                    tools:text="Rp 200.000" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btn_qty_min"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/button_curvy_green"
                    app:srcCompat="@drawable/ic_minus_white_24dp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_qty"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/black_70"
                    android:textColorHighlight="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_16"
                    app:backgroundTint="@color/tkpd_main_green"
                    tools:text="1000" />

                <ImageView
                    android:id="@+id/btn_qty_plus"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/button_curvy_green"
                    app:srcCompat="@drawable/ic_new_action_plus"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_error_form_validation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:textColor="@color/text_cart_item_error_red"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:visibility="gone"
                tools:ignore="SmallSp"
                tools:text="Maksimal 2 broh"
                tools:visibility="visible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/grey_300" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_label_form_remark"
                style="@style/TextSmallMediumBlack38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_note_for_seller" />

            <TextView
                android:id="@+id/tv_label_remark_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_toEndOf="@id/tv_label_form_remark"
                android:layout_toRightOf="@id/tv_label_form_remark"
                android:fontFamily="sans-serif-medium"
                android:text="@string/label_button_add_note"
                android:textColor="@color/tkpd_main_green"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_label_form_remark"
                android:fontFamily="sans-serif"
                android:imeActionLabel="Selesai"
                android:imeOptions="actionDone"
                android:maxLines="3"
                android:paddingBottom="@dimen/dp_16"
                android:textColor="@color/black_70"
                android:textColorHighlight="@color/tkpd_main_green"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                app:backgroundTint="@color/tkpd_main_green"
                tools:ignore="TextFields"
                tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim
barangnya gan!" />

            <TextView
                android:id="@+id/tv_error_form_remark_validation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/et_remark"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_4"
                android:paddingStart="@dimen/dp_4"
                android:textColor="@color/text_cart_item_error_red"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:visibility="gone"
                tools:ignore="RtlSymmetry,SmallSp"
                tools:text="Maksimal 2 broh"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tv_note_char_counter"
                style="@style/TextSmallNormalBlack38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/et_remark"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="0sp"
                android:visibility="gone"
                tools:text="60/140" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>