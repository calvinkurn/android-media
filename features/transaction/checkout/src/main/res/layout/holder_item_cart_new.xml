<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="@dimen/dp_3"
                                    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_item_warning_and_error"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8">

            <TextView
                android:id="@+id/tv_label_shop_name"
                style="@style/TextSmallMediumBlack38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16"
                android:text="@string/label_seller"
                tools:ignore="RtlSymmetry"/>

            <TextView
                android:id="@+id/tv_shop_name"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_toEndOf="@id/tv_label_shop_name"
                android:layout_toRightOf="@id/tv_label_shop_name"
                android:lineSpacingExtra="5sp"
                tools:ignore="RelativeOverlap"
                tools:text="Loaa Store"/>

            <ImageView
                android:id="@+id/btn_delete_cart"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                app:srcCompat="@drawable/ic_delete_cart"
                tools:ignore="ContentDescription"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_image_product"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="4dp"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/empty_photo"/>

                <ImageView
                    android:id="@+id/iv_image_wishlist"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignEnd="@+id/iv_image_product"
                    android:layout_alignRight="@+id/iv_image_product"
                    android:layout_alignTop="@+id/iv_image_product"
                    android:layout_marginEnd="-5dp"
                    android:layout_marginRight="-5dp"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/bg_circle_white"
                    android:padding="5dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_wishlist_unchecked"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_image_product"
                    android:layout_toRightOf="@id/iv_image_product"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingStart="@dimen/dp_8">

                    <TextView
                        android:id="@+id/tv_product_name"
                        style="@style/TextMid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        tools:text="Tas organizer sepeda double container"/>

                    <TextView
                        android:id="@+id/tv_product_price"
                        style="@style/TextMid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_product_name"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/orange_red"
                        tools:text="Rp 200.000"/>

                    <LinearLayout
                        android:id="@+id/product_properties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_product_price"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/iv_free_return_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            tools:src="@drawable/ic_free_return"/>

                        <TextView
                            android:id="@+id/tv_info_free_return"
                            style="@style/TextSmallNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingEnd="8dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="8dp"
                            android:paddingStart="8dp"
                            android:text="@string/checkout_module_label_free_returns"
                            android:textSize="12sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/tv_info_preorder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/layout_bg_pre_order"
                            android:fontFamily="sans-serif"
                            android:padding="2dp"
                            android:text="@string/checkout_module_label_po"
                            android:textSize="@dimen/sp_10"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/tv_info_cashback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_bg_cashback"
                            android:fontFamily="sans-serif"
                            android:padding="2dp"
                            android:paddingEnd="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingStart="5dp"
                            android:text="@string/checkout_module_label_cashback_5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_10"
                            android:textStyle="normal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_properties"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextSmallNormalBlack38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checkout_module_label_berat"/>

                        <TextView
                            android:id="@+id/tv_product_weight"
                            style="@style/TextSmallNormalBlack70"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="3kg"/>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingTop="16dp">

                <TextView
                    style="@style/TextSmallNormalBlack38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="@string/checkout_module_label_jumlah"
                    tools:ignore="RelativeOverlap"/>

                <ImageView
                    android:id="@+id/btn_qty_plus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bg_button_counter_plus"
                    tools:ignore="ContentDescription"/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_qty"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/btn_qty_plus"
                    android:layout_toStartOf="@id/btn_qty_plus"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingEnd="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/black_70"
                    android:textColorHighlight="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_16"
                    app:backgroundTint="@color/tkpd_main_green"
                    tools:text="1"/>

                <ImageView
                    android:id="@+id/btn_qty_min"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/et_qty"
                    android:layout_toStartOf="@id/et_qty"
                    android:src="@drawable/bg_button_counter_minus"/>

                <TextView
                    android:id="@+id/tv_error_form_validation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_qty"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:textColor="@color/text_cart_item_error_red"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:visibility="gone"
                    tools:ignore="SmallSp"
                    tools:text="Maksimal 2 broh"
                    tools:visibility="visible"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_label_form_remark"
                    style="@style/TextSmallNormalBlack38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_note_for_seller"/>

                <TextView
                    android:id="@+id/tv_label_remark_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginStart="@dimen/dp_6"
                    android:layout_toEndOf="@id/tv_label_form_remark"
                    android:layout_toRightOf="@id/tv_label_form_remark"
                    android:fontFamily="sans-serif"
                    android:text="@string/label_button_add_note"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal"/>


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_label_form_remark"
                    android:fontFamily="sans-serif"
                    android:imeActionLabel="Selesai"
                    android:imeOptions="actionDone"
                    android:maxLines="3"
                    android:paddingBottom="@dimen/dp_16"
                    android:textColor="@color/black_70"
                    android:textColorHighlight="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal"
                    app:backgroundTint="@color/tkpd_main_green"
                    tools:ignore="TextFields"
                    tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim
barangnya gan!"/>

                <TextView
                    android:id="@+id/tv_error_form_remark_validation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_remark"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_4"
                    android:textColor="@color/text_cart_item_error_red"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="normal"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry,SmallSp"
                    tools:text="Maksimal 2 broh"
                    tools:visibility="visible"/>
            </RelativeLayout>

            <View
                android:id="@+id/line_bottom_remark"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/grey_300"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>