<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_2">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:paddingStart="@dimen/dp_9"
        android:paddingLeft="@dimen/dp_9"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:weightSum="2">

        <CheckBox
            android:id="@+id/cb_emas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="-5dp"
            android:layout_weight="0.2"
            android:theme="@style/TransactionCheckbox" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_emas_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="@dimen/sp_4"
                android:text="@string/emas_checkout_title"
                android:textColor="@color/black_70"
                android:textSize="@dimen/sp_12"
                tools:text="Bulatkan Tagihan dengan Nabung Emas" />

            <TextView
                android:id="@+id/tv_emas_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingExtra="@dimen/sp_4"
                android:text="@string/emas_checkout_desc"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_12"
                tools:text="Pembulatan Emas sebesar Rp600" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_emas_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="0.2"
            android:src="@drawable/info_icon" />

    </LinearLayout>

</android.support.v7.widget.CardView>