<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:foreground="?selectableItemBackground"
    android:paddingStart="@dimen/dp_9"
    android:paddingTop="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:weightSum="2">

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cb_emas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_4"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_6" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_emas_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/emas_checkout_title"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Bulatkan Tagihan dengan Nabung Emas" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_emas_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/emas_checkout_desc"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="Pembulatan Emas sebesar Rp600" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/img_emas_info"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:paddingStart="@dimen/spacing_lvl2"
                android:paddingEnd="@dimen/spacing_lvl2"
                app:icon_name="INFORMATION" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
