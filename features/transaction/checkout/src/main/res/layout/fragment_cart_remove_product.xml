<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_200"
                android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:cardElevation="@dimen/dp_20"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_button_remove_product_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_remove_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/bg_button_disabled"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/checkout_module_label_hapus"
                android:textAllCaps="false"
                android:textColor="@color/grey_500"
                android:textSize="13sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cart_remove_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"/>

</RelativeLayout>