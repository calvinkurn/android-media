<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_2">

    <LinearLayout
        android:id="@+id/ll_shop_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/ll_warning_and_error"
            layout="@layout/layout_item_warning_and_error" />

        <FrameLayout
            android:id="@+id/fl_shop_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1">

            <RelativeLayout
                android:id="@+id/rl_shop_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackground"
                android:paddingLeft="@dimen/dp_9"
                android:paddingTop="@dimen/dp_16"
                android:paddingRight="@dimen/dp_9"
                android:paddingBottom="@dimen/dp_16">

                <CheckBox
                    android:id="@+id/cb_select_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:theme="@style/TransactionCheckbox" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cb_select_shop"
                    android:layout_alignBottom="@+id/cb_select_shop"
                    android:layout_toEndOf="@+id/cb_select_shop"
                    android:layout_toRightOf="@id/cb_select_shop"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_label_shop_name"
                        style="@style/TextSmallMediumBlack38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_seller" />

                    <TextView
                        android:id="@+id/tv_shop_name"
                        style="@style/TextSmallMediumBlack70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        tools:text="Loaa Store df" />

                    <ImageView
                        android:id="@+id/img_shop_badge"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        tools:src="@drawable/ic_badge_shop_official"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/img_shop_fulfill"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_logistic_logistic_fulfillment_normal_16" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_fulfill_district"
                    style="@style/TextSmallMediumBlack38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:layout_toEndOf="@+id/cb_select_shop"
                    android:layout_toRightOf="@+id/cb_select_shop"
                    tools:text="Tangerang Selatan" />

            </RelativeLayout>

        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>