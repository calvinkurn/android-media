<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp" />

    </android.support.design.widget.AppBarLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:visibility="visible">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tokopedia.promocheckout.common.view.widget.TickerPromoStackingCheckoutView
                    android:id="@+id/ticker_promostacking_checkout_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_30">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="154dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="center_horizontal"
                        app:srcCompat="@drawable/ic_emptycart"
                        tools:ignore="ContentDescription,VectorDrawableCompat" />

                    <TextView
                        style="@style/TextSmallNormalBlack38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/dp_8"
                        android:text="@string/checkout_module_keranjang_belanja_kosong" />

                    <TextView
                        style="@style/TextSmallNormalBlack54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/dp_16"
                        android:text="@string/checkout_empty_cart_sub_message"
                        android:textColor="@color/black_54"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_add_from_whislist"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:background="@drawable/medium_green_button_rounded"
                        android:gravity="center"
                        android:text="@string/checkout_module_tambahkan_dari_wishlist"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/btn_shopping_now"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:background="@drawable/medium_green_button_rounded"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="@string/checkout_module_belanja_sekarang"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:visibility="visible" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_last_seen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rl_last_seen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_16">

                        <TextView
                            android:id="@+id/tv_label_last_seen"
                            style="@style/TextSmallMediumBlack54"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:text="@string/label_empty_cart_recent_view"
                            android:textSize="@dimen/sp_16" />

                        <com.tokopedia.design.component.TextViewCompat
                            android:id="@+id/tv_last_seen_see_all"
                            style="@style/TextSmallMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tv_label_last_seen"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:text="@string/label_empty_cart_see_all"
                            android:textColor="@color/tkpd_main_green"
                            app:drawableRightCompat="@drawable/ic_keyboard_arrow_right_24dp" />

                        <View
                            android:id="@+id/v_separator_last_seen"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_below="@+id/tv_label_last_seen"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="@color/grey_300" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_last_seen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v_separator_last_seen"
                            android:layout_marginTop="@dimen/dp_16" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_wish_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rl_wish_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_16">

                        <TextView
                            android:id="@+id/tv_label_wish_list"
                            style="@style/TextSmallMediumBlack54"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:text="@string/label_empty_cart_wishlist"
                            android:textSize="@dimen/sp_16" />

                        <com.tokopedia.design.component.TextViewCompat
                            android:id="@+id/tv_wish_list_see_all"
                            style="@style/TextSmallMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tv_label_wish_list"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:text="@string/label_empty_cart_see_all"
                            android:textColor="@color/tkpd_main_green"
                            app:drawableRightCompat="@drawable/ic_keyboard_arrow_right_24dp" />

                        <View
                            android:id="@+id/v_separator_wish_list"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_below="@+id/tv_label_wish_list"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="@color/grey_300" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_wish_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v_separator_wish_list"
                            android:layout_marginTop="@dimen/dp_16" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_recommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rl_recommendation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_16">

                        <TextView
                            android:id="@+id/tv_label_recommendation"
                            style="@style/TextSmallMediumBlack54"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:text="@string/checkout_empty_cart_label_recommendation"
                            android:textSize="@dimen/sp_16" />

                        <com.tokopedia.design.component.TextViewCompat
                            android:id="@+id/tv_recommendation_see_all"
                            style="@style/TextSmallMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tv_label_recommendation"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_16"
                            android:paddingRight="@dimen/dp_16"
                            android:text="@string/label_empty_cart_see_all"
                            android:textColor="@color/tkpd_main_green"
                            android:visibility="gone"
                            app:drawableRightCompat="@drawable/ic_keyboard_arrow_right_24dp" />

                        <View
                            android:id="@+id/v_separator_recommendation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_below="@+id/tv_label_recommendation"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            android:background="@color/grey_300" />

                        <com.tokopedia.topads.sdk.widget.TopAdsView
                            android:id="@+id/topads"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/v_separator_recommendation"
                            android:layout_marginBottom="@dimen/dp_32"
                            android:layout_marginTop="@dimen/dp_16" />

                        <com.tokopedia.design.component.TextViewCompat
                            android:id="@+id/tv_recommendation_see_all_bottom"
                            style="@style/TextSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp_16"
                            android:background="@drawable/bg_empty_cart_recommandation_see_all"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/dp_8"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_8"
                            android:paddingTop="@dimen/dp_8"
                            android:text="@string/label_empty_cart_see_others"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            app:drawableRightCompat="@drawable/ic_keyboard_arrow_down_white_24dp"
                            tools:visibility="visible" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</LinearLayout>