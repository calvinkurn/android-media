<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_empty_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_50">

        <RelativeLayout
            android:id="@+id/layout_used_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/border_rectangle_grey"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_promo_code"
                    style="@style/TextSmallMediumBlack54"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:lineSpacingExtra="6sp"
                    android:padding="@dimen/dp_16"
                    tools:text="Lorem ipsum dolor sit amet, consect etur adipiscing elit, sed do eiusmodte mpor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniamane" />

                <ImageView
                    android:id="@+id/button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_16"
                    app:srcCompat="@drawable/ic_ticker_action_close_12dp"
                    tools:ignore="ContentDescription,VectorDrawableCompat" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_30">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                app:srcCompat="@drawable/ic_empty_cart"
                tools:ignore="ContentDescription,VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dp_8"
                android:text="@string/checkout_module_keranjang_belanja_kosong"
                android:textColor="@color/black_54"
                android:textSize="@dimen/sp_16"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dp_16"
                android:text="@string/checkout_module_buat_impian_anda_jadi_kenyataan_sekarang"
                android:textColor="@color/black_54"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/btn_add_from_whislist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/medium_green_button_rounded"
                android:gravity="center"
                android:text="@string/checkout_module_tambahkan_dari_wishlist"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_shopping_now"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/medium_white_button_rounded"
                android:gravity="center"
                android:text="@string/checkout_module_belanja_sekarang"
                android:textAllCaps="false"
                android:textColor="@color/black_38"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_wish_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_label_wish_list"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wishlist" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/tv_wish_list_see_all"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="Lihat Semua"
                android:textColor="@color/tkpd_main_green"
                app:drawableRightCompat="@drawable/ic_keyboard_arrow_right_24dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_wish_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_wish_list"
                android:layout_marginTop="@dimen/dp_16" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_last_seen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_label_last_seen"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terakhir Dilihat" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/tv_last_seen_see_all"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="Lihat Semua"
                android:textColor="@color/tkpd_main_green"
                app:drawableRightCompat="@drawable/ic_keyboard_arrow_right_24dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_last_seen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_last_seen"
                android:layout_marginTop="@dimen/dp_16" />

        </RelativeLayout>

        <com.tokopedia.topads.sdk.widget.TopAdsView
            android:id="@+id/topads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
