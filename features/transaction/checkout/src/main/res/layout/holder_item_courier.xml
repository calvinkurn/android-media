<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:paddingBottom="@dimen/dp_12"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_12">

    <TextView
        android:id="@+id/tv_courier_name"
        style="@style/TextMidNormalBlack70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        tools:text="JNE" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_courier_name"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@+id/tv_courier_name"
        android:layout_toRightOf="@+id/tv_courier_name"
        tools:ignore="RelativeOverlap"
        tools:text="Mulai dari Rp 15.000" />

    <TextView
        android:id="@+id/tv_delivery_time_range"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_courier_name"
        android:layout_marginTop="4dp"
        tools:text="(6 - 8 jam pengiriman)" />

    <TextView
        android:id="@+id/tv_delivery_schedule"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_delivery_time_range"
        android:layout_marginTop="4dp"
        tools:text="Jadwal pengiriman 09:00-16:00 WIB" />

    <RadioButton
        android:id="@+id/rb_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:theme="@style/TransactionToggleButton" />

</RelativeLayout>
