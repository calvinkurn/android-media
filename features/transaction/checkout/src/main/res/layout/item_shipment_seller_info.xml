<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_14"
    android:layout_marginBottom="@dimen/dp_14"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_trade_in_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/bg_trade_in"
        android:fontFamily="sans-serif"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_4"
        android:text="Tukar Tambah"
        android:textColor="@color/text_trade_in_label"
        android:textSize="@dimen/sp_10"
        android:textStyle="normal"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_text_sent_by"
        style="@style/TextSmallMediumBlack38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_trade_in_label"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/sp_5"
        android:text="@string/label_seller"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_fulfill_district"
        style="@style/TextSmallMediumBlack38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_shop_name"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="Tangerang Selatan" />

    <TextView
        android:id="@+id/tv_shop_name"
        style="@style/TextMidMediumBlack70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_trade_in_label"
        android:layout_alignBottom="@+id/tv_text_sent_by"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_text_sent_by"
        android:layout_toRightOf="@+id/tv_text_sent_by"
        android:lineSpacingExtra="5sp"
        android:textStyle="bold"
        tools:text="Toko Adidas" />

    <ImageView
        android:id="@+id/img_shop_badge"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_below="@+id/tv_trade_in_label"
        android:layout_alignBottom="@+id/tv_shop_name"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_toEndOf="@+id/tv_shop_name"
        android:layout_toRightOf="@+id/tv_shop_name"
        tools:src="@drawable/ic_badge_shop_official"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/img_shop_fulfill"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_18"
        android:layout_alignBottom="@+id/tv_shop_name"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_toEndOf="@+id/img_shop_badge"
        android:layout_toRightOf="@+id/img_shop_badge"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_logistic_logistic_fulfillment_normal_16" />

</RelativeLayout>
