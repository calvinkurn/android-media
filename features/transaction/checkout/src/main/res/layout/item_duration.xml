<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_duration_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?selectableItemBackground"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_duration_header_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:text="@string/label_hardcoded_shipping_duration_info"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_duration"
        style="@style/TextMidMediumBlack70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_duration_header_info"
        android:layout_marginTop="@dimen/dp_16"
        android:lineSpacingExtra="4sp"
        tools:text="4 Jam" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextSmallNormalBlack54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_duration"
        android:layout_marginTop="4dp"
        tools:text="Mulai dari Rp10.000" />

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_duration"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_check" />

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_price"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/separator_color" />

</RelativeLayout>
