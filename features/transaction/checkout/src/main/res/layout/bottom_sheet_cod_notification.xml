<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/text_view_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/Unify_N700_68"
        android:fontFamily="sans-serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Make sure you have followed this terms to use Bayar di Tempat:\n\n\t•All the products you buy must support Bayar di Tempat\n\n\t•Maximum amount of transaction is IDR 1.000.000 excluding shipping cost\n\n" />


    <Button
        android:id="@+id/button_bottom_sheet_cod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/bg_button_green"
        android:text="@string/lebel_understood"
        android:textColor="@color/Unify_N0" />

</LinearLayout>