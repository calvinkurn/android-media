<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_promo_suggestion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_12"
                android:background="@color/white">

    <ImageView
        android:id="@+id/iv_close_banner"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_10"
        app:srcCompat="@drawable/ic_close_grey"
        tools:ignore="ContentDescription"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:layout_toLeftOf="@id/iv_close_banner"
        android:layout_toStartOf="@id/iv_close_banner">

        <ImageView
            android:id="@+id/iv_image_shipping_car"
            android:layout_width="54dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_shipping_car"
            android:visibility="gone"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_text_promo_suggestion_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_image_shipping_car"
            android:layout_toRightOf="@id/iv_image_shipping_car"
            android:textSize="@dimen/sp_11"
            tools:ignore="HardcodedText,SmallSp"
            tools:text="Potensi mendapatkan Gratis Ongkir sebesar"/>

        <TextView
            android:id="@+id/tv_text_promo_suggestion_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_text_promo_suggestion_description"
            android:layout_toEndOf="@id/iv_image_shipping_car"
            android:layout_toRightOf="@id/iv_image_shipping_car"
            android:textColor="@color/black_70"
            android:textSize="11sp"
            tools:ignore="HardcodedText,SmallSp"
            tools:text="Rp35.000."/>

    </RelativeLayout>
</RelativeLayout>