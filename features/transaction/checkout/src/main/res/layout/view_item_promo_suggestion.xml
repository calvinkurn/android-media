<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_promo_suggestion_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/white">

    <ImageView android:id="@+id/iv_close_banner"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription"
        android:src="@drawable/ic_close_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_close_banner"
        android:layout_toStartOf="@id/iv_close_banner"
        android:layout_margin="12dp">

        <ImageView android:id="@+id/iv_image_shipping_car"
            android:layout_width="54dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_shipping_car"
            android:visibility="gone" />

        <TextView android:id="@+id/tv_text_promo_suggestion_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_image_shipping_car"
            android:layout_toEndOf="@id/iv_image_shipping_car"
            android:textSize="11sp"
            tools:ignore="SmallSp"
            android:text="Potensi mendapatkan Gratis Ongkir sebesar"/>

        <TextView android:id="@+id/tv_text_promo_suggestion_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_image_shipping_car"
            android:layout_toEndOf="@id/iv_image_shipping_car"
            android:layout_below="@id/tv_text_promo_suggestion_description"
            android:textColor="@color/black_70"
            android:textSize="11sp"
            tools:ignore="SmallSp"
            android:text="Rp35.000."/>

    </RelativeLayout>
</RelativeLayout>