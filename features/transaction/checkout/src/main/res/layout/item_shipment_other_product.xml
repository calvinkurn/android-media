<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_show_more_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <View
        android:id="@+id/v_separator_multiple_product_same_store"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_height="0.5dp"
        android:background="@color/Unify_N100" />

    <RelativeLayout
        android:id="@+id/rl_expand_other_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0"
        android:foreground="?selectableItemBackground">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_expand_other_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/dp_16"
            android:textColor="@color/Unify_G500"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="+3 Produk Lainnya" />

        <ImageView
            android:id="@+id/iv_expand_other_product"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@drawable/checkout_module_ic_down"
            android:layout_toRightOf="@id/tv_expand_other_product"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/v_separator_below_product"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Unify_N100" />

</LinearLayout>