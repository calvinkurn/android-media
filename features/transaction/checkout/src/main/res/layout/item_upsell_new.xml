<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background">

    <com.tokopedia.unifycomponents.ContainerUnify
        android:id="@+id/checkout_upsell_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:container_color="GREY">

        <FrameLayout
            android:id="@+id/checkout_upsell_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/checkout_upsell_image"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="100dp"
                    android:scaleType="fitStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/checkout_upsell_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/Unify_NN950"
                    app:layout_constraintEnd_toStartOf="@id/checkout_upsell_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/checkout_upsell_image"
                    app:typographyType="paragraph_3"
                    tools:text="Yay, PLUS ditambahkan ke keranjang! Nikmati keuntungannya di transaksi ini" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/checkout_upsell_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/Unify_NN950"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/checkout_upsell_title"
                    app:layout_constraintStart_toStartOf="@id/checkout_upsell_title"
                    app:layout_constraintTop_toBottomOf="@id/checkout_upsell_title"
                    app:typographyType="display_2"
                    app:typographyWeight="bold"
                    tools:text="Rp300.000" />

                <com.tokopedia.unifycomponents.UnifyButton
                    android:id="@+id/checkout_upsell_button"
                    android:layout_width="108dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:unifyButtonSize="micro"
                    app:unifyButtonType="alternate"
                    app:unifyButtonVariant="filled"
                    tools:text="Cek PLUS" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </com.tokopedia.unifycomponents.ContainerUnify>

</FrameLayout>