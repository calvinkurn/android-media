<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_16">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_error"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16"
        android:visibility="visible"
        tools:ignore="UselessParent"
        tools:visbility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_error"
                style="@style/TextSmallMediumBlack54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/checkout_module_message_cart_error" />

            <TextView
                android:id="@+id/btn_error_action"
                style="@style/TextSmallMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/checkout_module_message_cart_error_action"
                android:textColor="@color/error_red_text" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>