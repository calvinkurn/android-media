<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <View
        android:id="@+id/v_separator_above_courier"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_300" />

    <LinearLayout
        android:id="@+id/ll_shipment_option_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_text_shipment"
            style="@style/TextSmallNormalBlack54"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="@string/label_courier" />

        <TextView
            android:id="@+id/choose_courier_button"
            style="@style/TextSmallMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/green_button_rounded_unify"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_27"
            android:paddingTop="@dimen/dp_9"
            android:text="@string/label_button_choose_courier"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_selected_courier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_shipmping_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_4">

                    <TextView
                        android:id="@+id/tv_shipping_type_name"
                        style="@style/TextMidNormalBlack70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/sp_4"
                        tools:text="Next Day" />

                    <TextView
                        android:id="@+id/tv_shipping_etd"
                        style="@style/TextMidNormalBlack70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        tools:text="(1-2 Hari Kerja)" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2">

                    <TextView
                        android:id="@+id/tv_courier_name"
                        style="@style/TextSmallNormalBlack54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/sp_4"
                        tools:text="JNE Reg (Reguler)" />

                    <TextView
                        android:id="@+id/tv_dash"
                        style="@style/TextSmallNormalBlack54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:text="-" />

                    <TextView
                        android:id="@+id/tv_courier_price"
                        style="@style/TextSmallNormalBlack54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp 10.000" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_change_courier"
                style="@style/TextSmallMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="@dimen/dp_16"
                android:text="Ubah Kurir"
                android:textColor="@color/medium_green" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300" />

        <LinearLayout
            android:id="@+id/ll_insurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8">

            <CheckBox
                android:id="@+id/cb_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckbox" />

            <CheckBox
                android:id="@+id/cb_insurance_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckboxDisabled" />

            <TextView
                android:id="@+id/tv_label_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_shipment_insurance" />

            <ImageView
                android:id="@+id/img_insurance_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foregroundGravity="center_vertical"
                android:padding="@dimen/dp_4"
                android:src="@drawable/info_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dropshipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_4"
            tools:visibility="visible">

            <CheckBox
                android:id="@+id/cb_dropshipper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_dropshipper_new" />

            <ImageView
                android:id="@+id/img_dropshipper_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_4"
                android:src="@drawable/info_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dropshipper_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/margin_ms"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_shipper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:hint="@string/label_hint_cart_item_dropshipper_name">

                <EditText
                    android:id="@+id/et_shipper_name"
                    style="@style/TextMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-4dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_shipper_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:hint="@string/label_hint_cart_item_dropshipper_phone_number">

                <EditText
                    android:id="@+id/et_shipper_phone"
                    style="@style/TextMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-4dp"
                    android:imeOptions="actionDone"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <EditText
                style="@style/TextMid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:imeOptions="actionDone"
                android:inputType="phone" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/separator_color" />

</LinearLayout>