<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/bg_checkout_shadow"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16">

                    <TextView
                        android:id="@+id/tv_item_count"
                        style="@style/TextSmallMediumBlack38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4sp"
                        tools:text="Harga Barang (3 Item)"/>

                    <TextView
                        android:id="@+id/tv_total_prices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:textColor="@color/orange_red"
                        android:textSize="16sp"
                        tools:text="Rp600.000"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/go_to_courier_page_button"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/orange_button_rounded"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Checkout"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            </LinearLayout>
        </FrameLayout>

        <com.tokopedia.core.customwidget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_layout"
            android:layout_gravity="bottom"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.tokopedia.core.customwidget.SwipeToRefresh>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_network_error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"/>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                android:id="@+id/empty_container"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/white"
                                                android:visibility="gone"
                                                tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_50">

            <RelativeLayout
                android:id="@+id/layout_used_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@drawable/border_rectangle_grey"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_promo_code"
                        style="@style/TextSmallMediumBlack54"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:lineSpacingExtra="6sp"
                        android:padding="@dimen/dp_16"
                        tools:text="Lorem ipsum dolor sit amet, consect etur adipiscing elit, sed do eiusmodte mpor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniamane"/>

                    <ImageView
                        android:id="@+id/button_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_16"
                        app:srcCompat="@drawable/ic_ticker_action_close_12dp"
                        tools:ignore="ContentDescription"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_30">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_empty_cart"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/checkout_module_keranjang_belanja_kosong"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="normal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/dp_16"
                    android:text="@string/checkout_module_buat_impian_anda_jadi_kenyataan_sekarang"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/btn_add_from_whislist"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="@drawable/medium_green_button_rounded"
                    android:gravity="center"
                    android:text="@string/checkout_module_tambahkan_dari_wishlist"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/btn_shopping_now"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:background="@drawable/medium_white_button_rounded"
                    android:gravity="center"
                    android:text="@string/checkout_module_belanja_sekarang"
                    android:textAllCaps="false"
                    android:textColor="@color/black_38"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <com.tokopedia.topads.sdk.widget.TopAdsView
                android:id="@+id/topads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>