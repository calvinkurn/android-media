<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_invoice_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_warning_and_error"
        layout="@layout/layout_item_warning_and_error"
        tools:visibility="visible" />

    <include
        layout="@layout/item_shipment_seller_info"
        tools:visibility="visible" />

    <include
        layout="@layout/item_promo_merchant"
        tools:visibility="gone" />

    <include
        layout="@layout/item_cart_product"
        tools:visibility="visible" />

    <include
        layout="@layout/item_shipment_other_product"
        tools:visibility="visible" />

    <include
        layout="@layout/item_shipment_address"
        tools:visibility="visible" />

    <include
        layout="@layout/item_shipment_courier"
        tools:visibility="visible" />

    <include
        layout="@layout/item_shipment_courier_recommendation"
        tools:visibility="visible" />

    <include
        layout="@layout/item_shipment_courier_blackbox"
        tools:visibility="visible" />

    <include
        layout="@layout/item_shipment_shipping_options"
        tools:visibility="visible" />

    <include
        layout="@layout/item_shipment_subtotal"
        tools:visibility="visible" />

</LinearLayout>