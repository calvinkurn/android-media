<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_invoice_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_warning_and_error"
        layout="@layout/layout_item_warning_and_error"
        tools:visibility="gone" />

    <include
        layout="@layout/item_shipment_seller_info"
        tools:visibility="visible" />

    <!-- Need to wrap with frame layout since need a feature that only available on frame layout for API below 23 -->
    <FrameLayout
        android:id="@+id/fl_disable_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <include
                layout="@layout/item_cart_product"
                tools:visibility="visible" />

            <include
                layout="@layout/item_shipment_other_product"
                tools:visibility="gone" />

            <!--Shipping: Shipping Experience-->
            <include
                layout="@layout/item_shipment_shipping_experience"
                tools:visibility="visible" />

            <!--Shipping: Option (Insurance, dropshipper, etc)-->
            <include
                layout="@layout/item_shipment_shipping_options"
                tools:visibility="gone" />

            <include
                layout="@layout/item_shipment_subtotal"
                tools:visibility="visible" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>