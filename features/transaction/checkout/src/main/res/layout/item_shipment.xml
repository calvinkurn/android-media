<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_invoice_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_warning_and_error"
        layout="@layout/layout_item_warning_and_error"
        tools:visibility="gone" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/checkout_custom_ticker_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_8"
        app:card_type="clear">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_R100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="true"
                android:src="@drawable/ic_system_status_error_normal_40"
                android:translationX="-8dp"
                android:translationY="-8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/checkout_custom_ticker_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginBottom="@dimen/spacing_lvl3"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/checkout_custom_ticker_action"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/checkout_custom_ticker_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16"
                android:text="@string/checkout_label_see_error_product"
                android:textColor="@color/Unify_G500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_6"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <!-- Need to wrap with frame layout since need a feature that only available on frame layout for API below 23 -->
    <FrameLayout
        android:id="@+id/fl_disable_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <include
                layout="@layout/item_shipment_seller_info"
                tools:visibility="visible" />

            <include
                layout="@layout/item_cart_product"
                tools:visibility="visible" />

            <include
                layout="@layout/item_shipment_other_product"
                tools:visibility="gone" />

            <!--Shipping: Shipping Experience-->
            <include
                layout="@layout/item_shipment_shipping_experience"
                tools:visibility="visible" />

            <!--Shipping: Option (Insurance, dropshipper, etc)-->
            <include
                layout="@layout/item_shipment_shipping_options"
                tools:visibility="gone" />

            <include
                layout="@layout/item_shipment_subtotal"
                tools:visibility="visible" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>