<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_checkout_shadow"
    android:orientation="vertical">

    <include layout="@layout/layout_item_warning_and_error" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_text_sent_by"
            style="@style/TextSmallMediumBlack38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:lineSpacingExtra="@dimen/sp_5"
            android:text="@string/label_seller" />

        <TextView
            android:id="@+id/tv_shop_name"
            style="@style/TextSmallMediumBlack70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/tv_text_sent_by"
            android:layout_toRightOf="@id/tv_text_sent_by"
            android:lineSpacingExtra="5sp"
            tools:text="Adidas" />

        <ImageView
            android:id="@+id/img_shop_badge"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_toRightOf="@+id/tv_shop_name"
            tools:src="@drawable/ic_badge_official" />

    </RelativeLayout>

    <include layout="@layout/item_cart_product" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <View
        android:id="@+id/v_separator_multiple_product_same_store"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_300" />

    <RelativeLayout
        android:id="@+id/rl_expand_other_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:foreground="?selectableItemBackground"
        android:orientation="horizontal"
        tools:visibility="gone">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_expand_other_product"
            style="@style/TextSmallMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/dp_16"
            android:textColor="@color/medium_green"
            app:drawableRightCompat="@drawable/ic_keyboard_arrow_down_24dp"
            tools:text="+3 Produk Lainnya" />

    </RelativeLayout>

    <View
        android:id="@+id/v_separator_above_courier"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_300" />

    <LinearLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:visibility="gone">

        <include
            layout="@layout/item_recipient_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/separator_color" />

    </LinearLayout>

    <com.tokopedia.design.pickuppoint.PickupPointLayout
        android:id="@+id/pickup_point_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_med"
        android:paddingLeft="@dimen/padding_med"
        android:paddingRight="@dimen/padding_med"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_shipment_option_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:visibility="visible"
        tools:visibility="gone">

        <TextView
            android:id="@+id/tv_text_shipment"
            style="@style/TextSmallNormalBlack54"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="@string/label_courier" />

        <TextView
            android:id="@+id/choose_courier_button"
            style="@style/TextSmallMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/green_button_rounded_unify"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_27"
            android:paddingTop="@dimen/dp_9"
            android:text="@string/label_button_choose_courier"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_selected_courier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            tools:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_shipmping_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_4">

                    <TextView
                        android:id="@+id/tv_shipping_type_name"
                        style="@style/TextMidNormalBlack70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/sp_4"
                        tools:text="Next Day" />

                    <TextView
                        android:id="@+id/tv_shipping_etd"
                        style="@style/TextMidNormalBlack70"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        tools:text="(1-2 Hari Kerja)" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2">

                    <TextView
                        android:id="@+id/tv_courier_name"
                        style="@style/TextSmallNormalBlack54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/sp_4"
                        tools:text="JNE Reg (Reguler)" />

                    <TextView
                        android:id="@+id/tv_dash"
                        style="@style/TextSmallNormalBlack54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:text="-" />

                    <TextView
                        android:id="@+id/tv_courier_price"
                        style="@style/TextSmallNormalBlack54"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp 10.000" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_change_courier"
                style="@style/TextSmallMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="@dimen/dp_16"
                android:text="Ubah Kurir"
                android:textColor="@color/medium_green" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300" />

        <LinearLayout
            android:id="@+id/ll_insurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8">

            <CheckBox
                android:id="@+id/cb_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckbox" />

            <CheckBox
                android:id="@+id/cb_insurance_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckboxDisabled" />

            <TextView
                android:id="@+id/tv_label_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_shipment_insurance" />

            <ImageView
                android:id="@+id/img_insurance_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foregroundGravity="center_vertical"
                android:padding="@dimen/dp_4"
                android:src="@drawable/info_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dropshipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_4"
            tools:visibility="visible">

            <CheckBox
                android:id="@+id/cb_dropshipper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_dropshipper_new" />

            <ImageView
                android:id="@+id/img_dropshipper_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_4"
                android:src="@drawable/info_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dropshipper_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/margin_ms"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_shipper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:hint="@string/label_hint_cart_item_dropshipper_name">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_shipper_name"
                    style="@style/TextMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-4dp"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    app:backgroundTint="@color/grey_300" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_shipper_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:hint="@string/label_hint_cart_item_dropshipper_phone_number">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_shipper_phone"
                    style="@style/TextMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-4dp"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    app:backgroundTint="@color/grey_300" />
            </android.support.design.widget.TextInputLayout>

            <EditText
                style="@style/TextMid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:imeOptions="actionDone"
                android:inputType="phone" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/separator_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_cart_sub_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:padding="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_cart_sub_total"
                style="@style/TextSmallMediumBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/label_subtotal"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/iv_detail_option_chevron"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                app:srcCompat="@drawable/ic_keyboard_arrow_down_24dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_sub_total_price"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_detail_option_chevron"
                android:layout_toStartOf="@id/iv_detail_option_chevron"
                tools:text="Rp200.000" />

            <TextView
                android:id="@+id/tv_shipment_option"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_84"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="end"
                android:textColor="@color/medium_green"
                android:visibility="gone"
                tools:text="Go-send Instan" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shipment_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_total_item"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                tools:text="Harga (1 Barang)" />

            <TextView
                android:id="@+id/tv_total_item_price"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/tv_total_item"
                android:layout_toRightOf="@id/tv_total_item"
                android:gravity="end"
                tools:text="Rp1.400.000" />

            <TextView
                android:id="@+id/tv_shipping_fee"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_item"
                android:layout_marginBottom="@dimen/dp_16"
                tools:text="Ongkos Kirim (1kg)" />

            <TextView
                android:id="@+id/tv_shipping_fee_price"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_total_item"
                android:gravity="end"
                tools:text="Rp10.000" />

            <TextView
                android:id="@+id/tv_insurance_fee"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shipping_fee"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/label_insurance_price" />

            <TextView
                android:id="@+id/tv_insurance_fee_price"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_shipping_fee"
                android:gravity="end"
                tools:text="Rp 20.000" />

            <TextView
                android:id="@+id/tv_additional_fee"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_insurance_fee"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/label_seller_additional_cost" />

            <TextView
                android:id="@+id/tv_additional_fee_price"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_insurance_fee"
                android:gravity="end"
                tools:text="Rp 19.000" />

            <TextView
                android:id="@+id/tv_promo_text"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_additional_fee"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/label_promo"
                android:visibility="gone"
                tools:text="Promo bla bla bla" />

            <TextView
                android:id="@+id/tv_promo_price"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_insurance_fee"
                android:gravity="end"
                android:visibility="gone"
                tools:text="Rp100.000" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>