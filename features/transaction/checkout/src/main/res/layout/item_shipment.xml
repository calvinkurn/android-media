<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_item_warning_and_error" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_text_sent_by"
            style="@style/TextSmallMediumBlack38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:lineSpacingExtra="5sp"
            android:text="@string/label_seller" />

        <TextView
            android:id="@+id/tv_shop_name"
            style="@style/TextSmallMediumBlack70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tv_text_sent_by"
            android:layout_toRightOf="@id/tv_text_sent_by"
            android:lineSpacingExtra="5sp"
            tools:text="Adidas" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />

    <include layout="@layout/item_cart_product" />

    <LinearLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        tools:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e0e0e0" />

        <include
            layout="@layout/item_recipient_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8" />

    </LinearLayout>

    <com.tokopedia.design.pickuppoint.PickupPointLayout
        android:id="@+id/pickup_point_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_med"
        android:paddingLeft="@dimen/padding_med"
        android:paddingRight="@dimen/padding_med"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <View
        android:id="@+id/v_separator_multiple_product_same_store"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_300" />

    <RelativeLayout
        android:id="@+id/rl_expand_other_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_expand_other_product"
            style="@style/TextSmallMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/medium_green"
            tools:text="+3 Produk Lainnya" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_300" />

    <LinearLayout
        android:id="@+id/ll_shipment_option_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_text_shipment"
            style="@style/TextSmallNormalBlack54"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/label_courier" />

        <TextView
            android:id="@+id/choose_courier_button"
            style="@style/TextSmallMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/green_button_rounded_unify"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="9dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:paddingTop="9dp"
            android:text="@string/label_button_choose_courier"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_selected_courier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            tools:visibility="gone">

            <TextView
                android:id="@+id/tv_courier_name"
                style="@style/TextMidMediumBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                tools:text="JNE Reg (Reguler)" />

            <TextView
                android:id="@+id/tv_courier_price"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                tools:text="Rp 10.000" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_change_courier"
                style="@style/TextSmallMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="@dimen/dp_16"
                android:text="Ubah Kurir"
                android:textColor="@color/medium_green" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300" />

        <LinearLayout
            android:id="@+id/ll_insurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8">

            <CheckBox
                android:id="@+id/cb_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asuransi Pengiriman" />

            <ImageView
                android:id="@+id/img_insurance_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foregroundGravity="center_vertical"
                android:padding="@dimen/dp_4"
                android:src="@drawable/info_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dropshipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8">

            <CheckBox
                android:id="@+id/cb_dropshipper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dropshipper" />

            <ImageView
                android:id="@+id/img_dropshipper_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_4"
                android:src="@drawable/info_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dropshipper_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/new_margin_med"
            android:layout_marginRight="@dimen/new_margin_med"
            android:layout_marginTop="@dimen/margin_ms"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_shipper_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_hint_cart_item_dropshipper_name">

                <EditText
                    android:id="@+id/et_shipper_name"
                    style="@style/TextMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_shipper_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_hint_cart_item_dropshipper_phone">

                <EditText
                    android:id="@+id/et_shipper_phone"
                    style="@style/TextMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_vs"
                    android:imeOptions="actionDone"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_cart_sub_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            android:padding="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_cart_sub_total"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_subtotal"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/iv_detail_option_chevron"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="false"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:src="@drawable/chevron_thin_right"
                android:tint="@color/black_54"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_sub_total_price"
                style="@style/TextMid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_detail_option_chevron"
                android:layout_toStartOf="@id/iv_detail_option_chevron"
                android:textColor="@color/orange_red"
                tools:text="Rp200.000" />

            <TextView
                android:id="@+id/tv_shipment_option"
                style="@style/TextSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="84dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="end"
                android:textColor="@color/medium_green"
                android:visibility="gone"
                tools:text="Go-send Instan" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shipment_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_total_item"
                style="@style/TextSmallNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                tools:text="Jumlah Barang (1 Item)" />

            <TextView
                android:id="@+id/tv_total_item_price"
                style="@style/TextMidNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/tv_total_item"
                android:layout_toRightOf="@id/tv_total_item"
                android:gravity="end"
                tools:text="Rp1.400.000" />

            <TextView
                android:id="@+id/tv_shipping_fee"
                style="@style/TextSmallNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_item"
                android:layout_marginBottom="18dp"
                tools:text="Ongkos Kirim (1kg)" />

            <TextView
                android:id="@+id/tv_shipping_fee_price"
                style="@style/TextMidNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_total_item"
                android:gravity="end"
                tools:text="Rp10.000" />

            <TextView
                android:id="@+id/tv_insurance_fee"
                style="@style/TextSmallNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shipping_fee"
                android:text="Biaya Asuransi" />

            <TextView
                android:id="@+id/tv_insurance_fee_price"
                style="@style/TextMidNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_shipping_fee"
                android:gravity="end"
                tools:text="-" />

            <TextView
                android:id="@+id/tv_promo_text"
                style="@style/TextSmallNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_insurance_fee"
                android:text="@string/label_promo"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_promo_price"
                style="@style/TextMidNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_insurance_fee"
                android:gravity="end"
                android:visibility="gone"
                tools:text="Rp100.000" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>