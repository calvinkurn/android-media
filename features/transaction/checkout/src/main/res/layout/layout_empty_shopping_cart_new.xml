<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_med"
                android:layout_marginTop="@dimen/margin_vs"
                android:gravity="center_horizontal"
                android:src="@drawable/ic_empty_cart"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:text="Keranjang Belanja Kosong"
                android:textColor="@color/black_54"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="7sp"
                android:paddingBottom="24dp"
                android:text="Untuk saat ini anda tidak ada keranjang belanja"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/btn_shopping_now"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:background="@drawable/medium_green_button_rounded"
                android:gravity="center"
                android:text="Belanja Sekarang"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </LinearLayout>

        <com.tokopedia.topads.sdk.view.TopAdsView
            android:id="@+id/topads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>