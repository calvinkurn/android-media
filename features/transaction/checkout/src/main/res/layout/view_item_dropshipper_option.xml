<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/dp_16"
              android:layout_marginTop="@dimen/dp_16"
              android:background="@color/grey_200"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_dropshipper_option_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_dropshipper_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="Dropshipper"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            tools:ignore="HardcodedText"/>

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_toEndOf="@id/tv_dropshipper_text"
            android:layout_toRightOf="@id/tv_dropshipper_text"
            android:src="@drawable/icon_info"
            tools:ignore="ContentDescription"/>

        <Switch
            android:id="@+id/sw_dropshipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toEndOf="@+id/tv_dropshipper_text"
            android:layout_toRightOf="@+id/tv_dropshipper_text"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_detail_dropshipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:paddingTop="@dimen/dp_10"
            android:text="Dropshipper"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:ignore="HardcodedText"/>

        <EditText
            android:id="@+id/et_dropshipper_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="@dimen/sp_8"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:text="Toko Agus"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal"
            tools:ignore="HardcodedText,LabelFor,TextFields"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#e0e0e0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:paddingTop="@dimen/dp_10"
            android:text="Nomor Ponsel"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:ignore="HardcodedText"/>

        <EditText
            android:id="@+id/et_dropshipper_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:text="081234567890"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal"
            tools:ignore="HardcodedText,LabelFor,TextFields"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="#e0e0e0"/>
    </LinearLayout>

</LinearLayout>
