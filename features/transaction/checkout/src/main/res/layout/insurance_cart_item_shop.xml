<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:text="@string/insurance_cart_label"
        android:textColor="@color/clr_f531353b"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/insurance_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TransactionCheckbox"
        app:layout_constraintBottom_toBottomOf="@+id/insurance_image_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/insurance_image_icon" />

    <ImageView
        android:id="@+id/insurance_image_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_18"
        android:src="@drawable/ic_modal_toko"
        app:layout_constraintStart_toEndOf="@+id/insurance_checkbox"
        app:layout_constraintTop_toTopOf="@+id/insurance_tv_title" />

    <TextView
        android:id="@+id/insurance_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/clr_f531353b"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/insurance_image_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_title"
        tools:text="Asuransi Demam Berdarah" />

    <TextView
        android:id="@+id/insurance_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:lineSpacingExtra="6sp"
        android:textColor="#fa591d"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/insurance_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/insurance_tv_title"
        tools:text="Rp 45.000" />

    <TextView
        android:id="@+id/insurance_tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/insurance_tv_price"
        app:layout_constraintStart_toEndOf="@+id/insurance_tv_price"
        tools:text="Insurance subtitle"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/insurance_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:lineSpacingExtra="6sp"
        android:textColor="#03ac0e"
        android:textSize="@dimen/sp_12"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="@+id/insurance_tv_price"
        app:layout_constraintStart_toEndOf="@+id/insurance_tv_subtitle"
        tools:text="Info" />

    <ImageView
        android:id="@+id/insurance_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/insurance_tv_title"
        app:srcCompat="@drawable/ic_delete_cart" />

    <TextView
        android:id="@+id/insurance_appliation_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="Andrew Ignatius Sugijanto | 02 Jan 1990"
        android:textColor="#f531353b"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@+id/insurance_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/insurance_tv_price" />

    <TextView
        android:id="@+id/insurance_application_details_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="6sp"
        android:text="Ubah"
        android:textColor="#03ac0e"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/insurance_appliation_details" />

    <TextView
        android:id="@+id/tv_ticker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:lineSpacingExtra="5sp"
        android:text="Polis akan dikirim ke email / no. ponsel / TopChat setelah pembayaran berhasil"
        android:textColor="#7031353b"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/insurance_appliation_details" />
</android.support.constraint.ConstraintLayout>