<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_dropship"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:paddingBottom="12dp"
    android:background="@drawable/bg_pp_rounded_grey">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_dropship"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:icon_color_light_enable="@color/Unify_NN500"
        app:icon_name="DROPSHIPPING"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_dropship_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@id/icon_dropship"
        app:layout_constraintStart_toEndOf="@id/icon_dropship"
        app:layout_constraintTop_toTopOf="@id/icon_dropship"
        app:layout_goneMarginEnd="12dp"
        app:typographyType="display_3"
        tools:text="Kirim sebagai dropshipper" />

    <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
        android:id="@+id/switch_dropship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_dropship"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon_dropship"/>

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_dropship_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:unify_text_field_label="@string/dropship_name"
        app:unify_text_field_input_type="text"
        app:layout_constraintStart_toStartOf="@id/icon_dropship"
        app:layout_constraintTop_toBottomOf="@id/icon_dropship"
        app:layout_constraintEnd_toEndOf="@id/switch_dropship"/>

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_dropship_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:unify_text_field_label="@string/dropship_phone"
        app:unify_text_field_input_type="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tf_dropship_name"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
