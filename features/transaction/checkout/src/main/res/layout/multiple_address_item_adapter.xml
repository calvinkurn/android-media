    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_16">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/TextSmallNormalBlack38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:text="@string/label_weight"/>

            <TextView
                android:id="@+id/product_weight"
                style="@style/TextSmallNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3 Kg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <TextView
                style="@style/TextSmallNormalBlack38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:text="@string/label_count"/>

            <TextView
                android:id="@+id/product_qty"
                style="@style/TextSmallNormalBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_quantity"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/TextSmallNormalBlack38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_3"
        android:text="@string/label_note_for_seller_optional"/>

    <TextView
        android:id="@+id/notes_for_seller"
        style="@style/TextSmallNormalBlack70"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_no_note"
        tools:text="Saya kirim warna merah ya min! jangan sampai salah kirim barangnya"/>

    <include
        android:id="@+id/address_layout"
        layout="@layout/item_recipient_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"/>

    <View
        android:id="@+id/border_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/grey_300"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>