<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_shipment_recommendation_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/ll_courier_recommendation_state_loading"
        layout="@layout/partial_shimmering_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16" />

    <LinearLayout
        android:id="@+id/ll_select_shipment_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:text="@string/label_shipping_duration"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_choose_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/transaction_checkout_green_button_rounded_unify_new"
            android:foreground="?selectableItemBackground"
            android:paddingLeft="@dimen/dp_27"
            android:paddingTop="@dimen/dp_9"
            android:paddingRight="@dimen/dp_27"
            android:paddingBottom="@dimen/dp_9"
            android:text="@string/label_button_choose_courier_recommendation"
            android:textColor="@color/white"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_selected_shipment_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_selected_duration_recommendation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_4">

            <TextView
                android:id="@+id/tv_selected_duration_recommendation"
                style="@style/TextMidMediumBlack70"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                tools:text="8 jam" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_change_selected_duration"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/bg_green_round_address"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_9"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_9"
                android:text="@string/label_button_change_shipping_duration"
                android:textColor="@color/address_green"
                android:textSize="@dimen/sp_11"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_selected_courier_recommendation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16">

                <TextView
                    android:id="@+id/tv_selected_courier_recommendation"
                    style="@style/TextMidMediumBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Grab Parcel" />

                <TextView
                    android:id="@+id/tv_selected_price_recommendation"
                    style="@style/TextSmallNormalBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp20.000" />

                <TextView
                    android:id="@+id/tv_selected_price_b"
                    style="@style/TextMidMediumBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp20.000"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/tv_button_change_courier"
                    style="@style/TextSmallNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_button_change_courier_recommendation"
                    android:textColor="@color/tkpd_main_green" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_logistic_promo_stacking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_logistic_promo_msg"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_4"
                tools:text="Tidak dapat ubah kurir karena promo telah diterapkan" />

            <RelativeLayout
                android:id="@+id/tv_logistic_promo_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_logistic_title_desc"
                    style="@style/TextSmallNormalBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/gratis_ongkir_promo_kurir" />

                <TextView
                    android:id="@+id/tv_logistic_disc_amount"
                    style="@style/TextSmallNormalBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_logistic_promo_err"
                style="@style/TextSmallNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logistic_promo_err_msg"
                android:textColor="@color/error_red_text" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/grey_300" />

</LinearLayout>