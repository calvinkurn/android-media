<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        tools:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_recommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_label_recommendation"
                style="@style/TextSmallMediumBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:text="@string/label_empty_cart_recommendation"
                android:textSize="@dimen/sp_16" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/tv_recommendation_see_all"
                style="@style/TextSmallMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_label_recommendation"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:text="@string/label_empty_cart_see_all"
                android:textColor="@color/tkpd_main_green"
                app:drawableRightCompat="@drawable/ic_keyboard_arrow_right_24dp" />

            <View
                android:id="@+id/v_separator_recommendation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tv_label_recommendation"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/grey_300" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recommendation"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/v_separator_recommendation"
                android:layout_marginTop="@dimen/dp_16" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>