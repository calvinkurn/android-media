<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_checkout_shadow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground">

        <FrameLayout
            android:id="@+id/fl_select_to_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8">

            <CheckBox
                android:id="@+id/cb_remove_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckbox" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_product_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fl_select_to_remove"
            android:layout_toRightOf="@id/fl_select_to_remove"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_8">

                <TextView
                    android:id="@+id/tv_text_sender"
                    style="@style/TextSmallMediumBlack38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/sp_5"
                    android:text="@string/label_seller" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    style="@style/TextSmallMediumBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_toEndOf="@id/tv_text_sender"
                    android:layout_toRightOf="@id/tv_text_sender"
                    android:lineSpacingExtra="@dimen/sp_5"
                    tools:text="Adidas" />

                <ImageView
                    android:id="@+id/img_shop_badge"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_shop_name"
                    tools:src="@drawable/ic_badge_official" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white_two" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_16"
                android:paddingStart="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv_product_image"
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_52"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/empty_photo"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_product_name"
                        style="@style/TextMidMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_product_image"
                        android:layout_toRightOf="@id/iv_product_image"
                        android:textColor="@color/black"
                        tools:text="Kaos Adidas Camo Tongue Tee... White &amp; Red, XS" />

                    <include
                        android:id="@+id/product_properties"
                        layout="@layout/layout_cart_item_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_product_name"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_toEndOf="@id/iv_product_image"
                        android:layout_toRightOf="@id/iv_product_image" />

                    <TextView
                        android:id="@+id/tv_product_price"
                        style="@style/TextMidMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_properties"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_toEndOf="@id/iv_product_image"
                        android:layout_toRightOf="@id/iv_product_image"
                        android:textColor="@color/orange_red"
                        tools:text="Rp200.000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_product_price"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_toEndOf="@id/iv_product_image"
                        android:layout_toRightOf="@id/iv_product_image">

                        <TextView
                            style="@style/TextSmallNormalBlack38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_4"
                            android:layout_marginRight="@dimen/dp_4"
                            android:text="@string/label_count" />

                        <TextView
                            android:id="@+id/tv_product_total_item"
                            style="@style/TextSmallNormalBlack70"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>