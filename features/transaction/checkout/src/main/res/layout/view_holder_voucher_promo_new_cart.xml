<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    app:cardElevation="@dimen/dp_2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground">

        <FrameLayout
            android:id="@+id/layout_input_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?selectableItemBackground"
            tools:visibility="visible">

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/textview_voucher"
                style="@style/TextSmallMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawablePadding="@dimen/dp_8"
                android:foreground="?selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_16"
                android:text="@string/use_promo_code_or_coupon"
                android:textColor="@color/tkpd_main_green"
                app:drawableLeftCompat="@drawable/ic_voucher"
                tools:text="Gunakan Kode Promo atau Kupon" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/layout_used_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:id="@+id/label_promo_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                tools:text="Kode Promo: " />

            <TextView
                android:id="@+id/textview_promo_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginStart="@dimen/dp_3"
                android:layout_toEndOf="@id/label_promo_code"
                android:layout_toLeftOf="@+id/button_cancel"
                android:layout_toRightOf="@+id/label_promo_code"
                android:layout_toStartOf="@+id/button_cancel"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:textColor="@color/tkpd_main_orange"
                tools:text="TOPEDONGKIR" />

            <TextView
                android:id="@+id/textview_voucher_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_promo_code"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                tools:text="Potensi mendapatkan potongan ongkos kirim Rp. 40.000" />

            <ImageView
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:foreground="?selectableItemBackgroundBorderless"
                android:padding="@dimen/dp_16"
                app:srcCompat="@drawable/ic_ticker_action_close_12dp"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>