<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16">

    <FrameLayout
        android:id="@+id/layout_input_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textview_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/ic_kupon"
            android:drawablePadding="@dimen/dp_8"
            android:drawableStart="@drawable/ic_kupon"
            android:gravity="center"
            android:text="@string/use_promo_code_or_coupon"
            android:textColor="@color/tkpd_main_green"
            tools:text="Gunakan Kode Promo atau Kupon" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layout_used_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:id="@+id/label_promo_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            tools:text="Kode Promo: " />

        <TextView
            android:id="@+id/textview_promo_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_toEndOf="@id/label_promo_code"
            android:layout_toLeftOf="@+id/button_cancel"
            android:layout_toRightOf="@+id/label_promo_code"
            android:layout_toStartOf="@+id/button_cancel"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:textColor="@color/tkpd_main_orange"
            tools:text="TOPEDONGKIR" />

        <TextView
            android:id="@+id/textview_voucher_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_promo_code"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            tools:text="Potensi mendapatkan potongan ongkos kirim Rp. 40.000" />

        <ImageView
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/dp_16"
            app:srcCompat="@drawable/ic_ticker_action_close_12dp"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</FrameLayout>