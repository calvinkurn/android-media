<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_product_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_3">

    <View
        android:id="@+id/v_separator_multiple_product_same_store"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@color/grey_300"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_shipping_warning_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/checkout_module_bg_error"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        android:visibility="visible"
        tools:ignore="UselessParent"
        tools:visbility="visible">

        <TextView
            android:id="@+id/tv_error_shipment_item_title"
            style="@style/TextSmallMediumBlack54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkout_module_message_cart_error"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_error_shipment_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="sans-serif"
            android:text="@string/checkout_module_message_cart_error"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_product_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_product_card"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_margin="5dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:cardCornerRadius="6dp"
            app:cardElevation="@dimen/dp_0">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/green_200"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toEndOf="@id/iv_product_card"
            android:layout_toRightOf="@id/iv_product_card"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Kaos Adidas Camo Tongue Tee... White  gsf fsu gfsah hjsfj gsfugshj sjbfj hsjfh hsfjh vhsfh bjsf bjsfbjRed, XS" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_variant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_toEndOf="@id/iv_product_card"
            android:layout_toRightOf="@id/iv_product_card"
            android:textColor="@color/Neutral_N700_68"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Biru, XXL" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_item_count_and_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_variant"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_toEndOf="@id/iv_product_card"
            android:layout_toRightOf="@id/iv_product_card"
            android:textColor="@color/Neutral_N700_68"
            app:typographyType="small"
            app:typographyWeight="reguler"
            tools:text="10000 barang (1000 kg)" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_count_and_weight"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toEndOf="@id/iv_product_card"
            android:layout_toRightOf="@id/iv_product_card"
            android:gravity="center_vertical"
            android:textColor="@color/Neutral_N700_68"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Rp500.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_count_and_weight"
            android:layout_toEndOf="@+id/tv_product_original_price"
            android:layout_toRightOf="@+id/tv_product_original_price"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp200.000" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layout_product_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_price"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:layout_toRightOf="@+id/iv_product_card"
            android:foregroundGravity="center_vertical"
            app:flexWrap="wrap"/>

    </RelativeLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_optional_note_to_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_3"
        tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim barangnya gan!" />

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/product_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:closeButtonVisibility="gone"
        app:tickerShapeType="loose"
        app:tickerType="warning" />

    <RelativeLayout
        android:id="@+id/rlayout_purchase_protection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/checkbox_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <CheckBox
                android:id="@+id/checkbox_ppp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:button="@drawable/ic_cart_check_box" />

            <CheckBox
                android:id="@+id/checkbox_ppp_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:button="@drawable/ic_cart_check_box"
                android:enabled="false" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_toStartOf="@+id/text_ppp_more"
            android:layout_toLeftOf="@+id/text_ppp_more"
            android:layout_toEndOf="@+id/checkbox_rl"
            android:layout_toRightOf="@+id/checkbox_rl"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_link_text"
                style="@style/TextMidMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black_39"
                tools:text="Proteksi Produk" />

            <TextView
                android:id="@+id/text_price_per_product"
                style="@style/TextVerySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/grey_500"
                tools:text="Rp 50.000 / barang" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_ppp_more"
            style="@style/TextSmallMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:foreground="?selectableItemBackgroundBorderless"
            android:padding="@dimen/dp_16"
            android:text="@string/ppp_more"
            android:textColor="@color/medium_green" />
    </RelativeLayout>

</LinearLayout>
