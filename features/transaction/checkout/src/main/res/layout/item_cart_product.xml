<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_product_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_3">

    <View
        android:id="@+id/v_separator_multiple_product_same_store"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/grey_300"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_shipping_warning_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:background="@drawable/bg_error"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        android:visibility="visible"
        tools:ignore="UselessParent"
        tools:visbility="visible">

        <TextView
            android:id="@+id/tv_error_shipment_item_title"
            style="@style/TextSmallMediumBlack54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkout_module_message_cart_error"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_error_shipment_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="sans-serif"
            android:text="@string/checkout_module_message_cart_error"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@color/white">

        <android.support.v7.widget.CardView
            android:id="@+id/iv_product_card"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            app:cardCornerRadius="6dp"
            app:cardElevation="@dimen/dp_0"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/empty_photo"
                tools:ignore="ContentDescription" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_product_name"
            style="@style/TextMidMediumBlack70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toEndOf="@id/iv_product_card"
            android:layout_toRightOf="@id/iv_product_card"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            tools:text="Kaos Adidas Camo Tongue Tee... White  gsf fsu gfsah hjsfj gsfugshj sjbfj hsjfh hsfjh vhsfh bjsf bjsfbjRed, XS" />

        <include
            android:id="@+id/layout_policy"
            layout="@layout/layout_cart_item_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toEndOf="@id/iv_product_card"
            android:layout_toRightOf="@id/iv_product_card" />

        <TextView
            android:id="@+id/tv_item_count_and_weight"
            style="@style/TextSmallMediumBlack38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_policy"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toEndOf="@id/iv_product_card"
            android:layout_toRightOf="@id/iv_product_card"
            tools:text="2 barang (3 kg)" />

        <TextView
            android:id="@+id/tv_product_price"
            style="@style/TextMidMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_count_and_weight"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toEndOf="@id/iv_product_card"
            android:layout_toRightOf="@id/iv_product_card"
            android:textColor="@color/orange_red"
            android:textStyle="bold"
            tools:text="Rp200.000" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_optional_note_to_seller_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_note_to_seller_label"
            style="@style/TextSmallNormalBlack38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/label_note_for_seller" />

        <TextView
            android:id="@+id/tv_optional_note_to_seller"
            style="@style/TextSmallMediumBlack38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim barangnya gan!" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlayout_purchase_protection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox_ppp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:theme="@style/TransactionCheckbox" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_toStartOf="@+id/text_ppp_more"
            android:layout_toLeftOf="@+id/text_ppp_more"
            android:layout_toEndOf="@+id/checkbox_ppp"
            android:layout_toRightOf="@+id/checkbox_ppp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_link_text"
                style="@style/TextMidMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black_39"
                tools:text="Proteksi Gadget" />

            <TextView
                android:id="@+id/text_price_per_product"
                style="@style/TextVerySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/grey_500"
                tools:text="Rp 50.000 / barang" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_ppp_more"
            style="@style/TextSmallMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:foreground="?selectableItemBackgroundBorderless"
            android:padding="@dimen/dp_16"
            android:text="@string/ppp_more"
            android:textColor="@color/medium_green" />
    </RelativeLayout>

</LinearLayout>
