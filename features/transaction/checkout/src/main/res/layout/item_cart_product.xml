<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_product_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:id="@+id/ll_shipping_warning_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:ignore="UseCompoundDrawables"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/img_shipping_warning"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_warning_red" />

        <TextView
            android:id="@+id/tv_shipping_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#d30b16"
            android:textSize="@dimen/sp_11"
            android:textStyle="normal"
            tools:text="Produk ini tidak dapat dikirimkan dengan kurir yang dipilih" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/empty_photo"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_product_name"
            style="@style/TextMidMediumBlack70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_product_image"
            android:layout_toRightOf="@id/iv_product_image"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Kaos Adidas Camo Tongue Tee... White  gsf fsu gfsah hjsfj gsfugshj sjbfj hsjfh hsfjh vhsfh bjsf bjsfbjRed, XS" />

        <include
            android:layout_marginTop="@dimen/dp_4"
            android:id="@+id/layout_policy"
            layout="@layout/layout_cart_item_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_toEndOf="@id/iv_product_image"
            android:layout_toRightOf="@id/iv_product_image" />

        <TextView
            android:id="@+id/tv_item_count_and_weight"
            style="@style/TextSmallMediumBlack38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_policy"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toEndOf="@id/iv_product_image"
            android:layout_toRightOf="@id/iv_product_image"
            tools:text="2 barang (3 kg)" />

        <TextView
            android:id="@+id/tv_product_price"
            style="@style/TextMidMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_count_and_weight"
            android:layout_toEndOf="@id/iv_product_image"
            android:layout_toRightOf="@id/iv_product_image"
            android:textColor="@color/orange_red"
            tools:text="Rp200.000" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_optional_note_to_seller_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_note_to_seller_label"
            style="@style/TextSmallNormalBlack38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_note_for_seller" />

        <TextView
            android:id="@+id/tv_optional_note_to_seller"
            style="@style/TextSmallNormalBlack70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="8dp"
            tools:text="Saya pesan warna merah yah min.. jangan sampai salah kirim barangnya gan!" />

    </LinearLayout>

    <View
        android:id="@+id/v_separator_multiple_product_same_store"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey_300"
        android:visibility="gone" />

</LinearLayout>