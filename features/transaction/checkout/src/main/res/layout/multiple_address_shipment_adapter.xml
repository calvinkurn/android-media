<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="@dimen/dp_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/layout_item_warning_and_error"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_10">

            <TextView
                style="@style/TextSmallMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:lineSpacingExtra="5sp"
                android:text="@string/label_sent_by"
                android:textColor="@color/label_color"/>

            <TextView
                android:id="@+id/sender_name"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5sp"
                tools:text="Adidas"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300"/>

        <include layout="@layout/item_cart_product"/>

        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_10">

            <include
                layout="@layout/item_recipient_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chevron_right_grey_checkout_module"
                tools:ignore="ContentDescription"/>

        </LinearLayout>

        <com.tokopedia.design.pickuppoint.PickupPointLayout
            android:id="@+id/pickup_point_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10">

            <TextView
                style="@style/TextSmallMediumBlack54"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_weight="1"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/label_courier"/>

            <TextView
                android:id="@+id/choose_courier_button"
                style="@style/TextSmallMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/medium_green_button_rounded"
                android:paddingBottom="9dp"
                android:paddingLeft="27dp"
                android:paddingRight="27dp"
                android:paddingTop="9dp"
                android:text="@string/label_choose_courier"
                android:textColor="@color/white"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tv_selected_shipment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_8"
                android:paddingStart="@dimen/dp_8"
                android:textColor="@color/tkpd_main_green"
                android:textSize="12sp"
                android:visibility="gone"
                tools:ignore="RtlSymmetry"
                tools:text="Alfatrex"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_chevron_shipment_option"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingEnd="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:tint="@color/tkpd_main_green"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_chevron_right_grey_checkout_module"
                tools:ignore="ContentDescription,RtlSymmetry"
                tools:visibility="visible"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300"/>

        <RelativeLayout
            android:id="@+id/sub_total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_10">

            <TextView
                android:id="@+id/sub_total_label"
                style="@style/TextSmallMediumBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="end"
                android:text="@string/label_subtotal"/>

            <ImageView
                android:id="@+id/sub_total_detail_button"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                app:srcCompat="@drawable/ic_arrow_down_grey_checkout_module"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/sub_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/sub_total_detail_button"
                android:layout_toStartOf="@id/sub_total_detail_button"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/orange_900"
                tools:ignore="RelativeOverlap"
                tools:text="-"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/detail_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/total_goods_label"
                    style="@style/TextSmallMediumBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jumlah Barang (# item)"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/item_price"
                    style="@style/TextSmallMediumBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    tools:text="99999"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/total_delivery_label"
                    style="@style/TextSmallMediumBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ongkos Kirim (#)"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/delivery_price"
                    style="@style/TextSmallMediumBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    tools:text="99999"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    style="@style/TextSmallMediumBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_insurance_price"/>

                <TextView
                    android:id="@+id/total_insurance_price"
                    style="@style/TextSmallMediumBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    tools:text="99999"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>