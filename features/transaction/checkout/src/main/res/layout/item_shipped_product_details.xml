<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="@dimen/dp_0"
                                    app:cardElevation="@dimen/dp_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_item_warning_and_error"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8">

            <TextView
                android:id="@+id/tv_text_sent_by"
                style="@style/TextSmallMediumBlack38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:lineSpacingExtra="5sp"
                android:text="@string/label_seller"/>

            <TextView
                android:id="@+id/tv_shop_name"
                style="@style/TextSmallMediumBlack70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@id/tv_text_sent_by"
                android:layout_toRightOf="@id/tv_text_sent_by"
                android:lineSpacingExtra="5sp"
                tools:text="Adidas"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300"/>

        <include layout="@layout/item_cart_product"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_expand_other_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_expand_other_product"
                style="@style/TextSmallMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/dp_16"
                android:textColor="@color/tkpd_main_green"
                tools:text="+3 Produk Lainnya"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/tv_expand_other_product"
                android:background="@color/grey_300"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_shipment_option_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:visibility="visible"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tv_text_shipment"
                style="@style/TextSmallNormalBlack54"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:text="@string/label_courier"/>

            <TextView
                android:id="@+id/choose_courier_button"
                style="@style/TextSmallMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/medium_green_button_rounded"
                android:foreground="?selectableItemBackground"
                android:paddingBottom="9dp"
                android:paddingLeft="27dp"
                android:paddingRight="27dp"
                android:paddingTop="9dp"
                android:text="@string/label_button_choose_courier"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/ll_selected_courier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingTop="@dimen/dp_16"
                android:visibility="gone"
                tools:ignore="UseCompoundDrawables"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_selected_shipment"
                    style="@style/TextSmallNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tkpd_main_green"
                    tools:text="Alfatrex"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:tint="@color/tkpd_main_green"
                    app:srcCompat="@drawable/ic_chevron_right_grey_checkout_module"
                    tools:ignore="ContentDescription"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <RelativeLayout
                android:id="@+id/rl_cart_sub_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_cart_sub_total"
                    style="@style/TextSmallNormalBlack54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_subtotal"
                    tools:ignore="SmallSp"/>

                <ImageView
                    android:id="@+id/iv_detail_option_chevron"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="false"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:tint="@color/black_54"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_arrow_down_grey_checkout_module"/>

                <TextView
                    android:id="@+id/tv_sub_total_price"
                    style="@style/TextMid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_detail_option_chevron"
                    android:layout_toStartOf="@id/iv_detail_option_chevron"
                    android:textColor="@color/orange_red"
                    tools:text="Rp200.000"/>

                <TextView
                    android:id="@+id/tv_shipment_option"
                    style="@style/TextSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="84dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="end"
                    android:textColor="@color/tkpd_main_green"
                    android:visibility="gone"
                    tools:text="Go-send Instan"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shipment_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_16"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_total_item"
                    style="@style/TextSmallNormalBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    tools:text="Jumlah Barang (1 Item)"/>

                <TextView
                    android:id="@+id/tv_total_item_price"
                    style="@style/TextMidNormalBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@id/tv_total_item"
                    android:layout_toRightOf="@id/tv_total_item"
                    android:gravity="end"
                    tools:text="Rp1.400.000"/>

                <TextView
                    android:id="@+id/tv_shipping_fee"
                    style="@style/TextSmallNormalBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_total_item"
                    android:layout_marginBottom="@dimen/dp_180"
                    tools:text="Ongkos Kirim (1kg)"/>

                <TextView
                    android:id="@+id/tv_shipping_fee_price"
                    style="@style/TextMidNormalBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_total_item"
                    android:gravity="end"
                    tools:text="Rp10.000"/>

                <TextView
                    android:id="@+id/tv_insurance_fee"
                    style="@style/TextSmallNormalBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_shipping_fee"
                    android:text="@string/checkout_module_label_biaya_asuransi"/>

                <TextView
                    android:id="@+id/tv_insurance_fee_price"
                    style="@style/TextMidNormalBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_shipping_fee"
                    android:gravity="end"
                    tools:text="-"/>

                <TextView
                    android:id="@+id/tv_promo_text"
                    style="@style/TextSmallNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_insurance_fee"
                    android:text="@string/label_promo"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_promo_price"
                    style="@style/TextMidNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_insurance_fee"
                    android:gravity="end"
                    android:visibility="gone"
                    tools:text="Rp100.000"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>