<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/upload_prescription_layout"
    android:visibility="gone"
    tools:visibility="visible"
    android:background="@color/Unify_Background">

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/upload_prescription_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/unify_space_12"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/upload_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0"
                />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/upload_prescription_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_weight="1"
                android:textColor="@color/Unify_NN950"
                app:typographyType="display_3"
                app:typographyWeight="bold"
                tools:text="Upload Foto Resep Dokter"
                />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/iv_upload_right"
                android:layout_width="@dimen/spacing_lvl5"
                android:layout_height="@dimen/spacing_lvl5"
                android:layout_weight="0"
                app:icon_name="CHEVRON_RIGHT" />
        </LinearLayout>

    </com.tokopedia.unifycomponents.CardUnify2>
</LinearLayout>