<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_prescription_layout"
    android:background="@color/Unify_Background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_grey"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        >

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/upload_icon"
            android:layout_width="@dimen/spacing_lvl5"
            android:layout_height="@dimen/spacing_lvl5"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:contentDescription="@string/promo_checkout_icon_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/upload_icon"
            app:layout_constraintTop_toTopOf="@id/upload_icon"
            app:layout_constraintBottom_toBottomOf="@id/upload_icon"
            app:layout_constraintEnd_toStartOf="@id/iv_prescription_right"
            android:paddingTop="6dp"
            android:paddingBottom="9dp"
            android:orientation="vertical"
            app:typographyWeight="bold"
            app:typographyType="heading_5"
            android:textColor="@color/Unify_N700_96"
            tools:text="Upload Foto Resep"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            />


        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iv_prescription_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_promo_checkout_chevron_right"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginStart="@dimen/spacing_lvl3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</LinearLayout>