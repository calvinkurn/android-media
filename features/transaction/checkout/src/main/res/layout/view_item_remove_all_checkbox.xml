<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_checkout_shadow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground">

        <FrameLayout
            android:id="@+id/fl_select_to_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginBottom="@dimen/dp_9"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/TransactionCheckbox" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_product_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toEndOf="@+id/fl_select_to_remove"
            android:layout_toRightOf="@id/fl_select_to_remove">

            <TextView
                android:id="@+id/tv_text_sender"
                style="@style/TextMidMediumBlack54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:lineSpacingExtra="5sp"
                android:text="@string/label_select_all" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>