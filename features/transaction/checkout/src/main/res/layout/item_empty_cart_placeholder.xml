<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_30">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_8"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/ic_cart_empty"
            tools:ignore="ContentDescription,VectorDrawableCompat" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="@string/checkout_module_keranjang_belanja_kosong_new"
            android:textColor="@color/text_black"
            app:typographyType="heading_3"
            app:typographyWeight="bold"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_24"
            android:text="@string/checkout_empty_cart_sub_message_new"
            android:textColor="@color/subtext_black"
            app:typographyType="body_3"
            android:lineSpacingExtra="6sp"
            app:typographyWeight="reguler" />

        <TextView
            android:id="@+id/btn_add_from_whislist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/medium_green_button_rounded"
            android:gravity="center"
            android:text="@string/checkout_module_tambahkan_dari_wishlist"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/btn_shopping_now"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/medium_green_button_rounded_unify"
            android:gravity="center"
            android:text="@string/checkout_module_mulai_belanja"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible"
            app:typographyType="heading_5"
            app:typographyWeight="bold"/>
    </LinearLayout>

</LinearLayout>