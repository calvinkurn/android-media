<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_2">

    <RelativeLayout
        android:id="@+id/rl_shipment_recipient_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_shipment_address"
            style="@style/TextSmallMediumBlack70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="@string/checkout_module_title_shipping_dest" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_shipment_address"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/separator_color" />

        <RelativeLayout
            android:id="@+id/rl_image_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <LinearLayout
                android:id="@+id/rl_detail_shipment_recipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_recipient_address" />

                <com.tokopedia.design.pickuppoint.PickupPointLayout
                    android:id="@+id/pickup_point_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_trade_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_detail_shipment_recipient"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/bg_trade_in_address_info"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@drawable/ic_info_trade_in" />

                <TextView
                    android:id="@+id/tv_trade_in_info"
                    style="@style/TextSmallNormalBlack70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:clickable="true"
                    android:text="@string/checkout_shipment_label_tradein" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_add_or_change_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_image_address_container"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_send_to_multiple_address"
                style="@style/TextSmallMediumBlack54"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@drawable/bg_grey_round_address"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:text="@string/label_button_send_to_multiple_address"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_change_recipient_address"
                style="@style/TextSmallMediumBlack54"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_weight="1"
                android:background="@drawable/bg_grey_round_address"
                android:foreground="?selectableItemBackground"
                android:gravity="center"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:text="@string/label_button_change_address_new"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>