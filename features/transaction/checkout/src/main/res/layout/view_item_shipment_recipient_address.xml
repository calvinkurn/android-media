<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_shipment_recipient_address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_checkout_shadow">

    <RelativeLayout
        android:id="@+id/rl_image_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_16">

        <LinearLayout
            android:id="@+id/rl_detail_shipment_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_recipient_address" />

            <com.tokopedia.design.pickuppoint.PickupPointLayout
                android:id="@+id/pickup_point_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_add_or_change_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_image_address_container"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_change_recipient_address"
            style="@style/TextSmallMediumBlack54"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="@string/label_button_change_address" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/separator_color" />

        <TextView
            android:id="@+id/tv_send_to_multiple_address"
            style="@style/TextSmallMediumBlack54"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:text="@string/label_button_send_to_multiple_address" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/ll_add_or_change_address_container"
        android:background="@color/separator_color" />

</RelativeLayout>