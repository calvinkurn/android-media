<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- dropshadow -->
    <item>
        <shape>
            <solid android:color="#10AAAAAA"/>
            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#20AAAAAA"/>
            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#30AAAAAA"/>
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#40AAAAAA"/>
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
        </shape>
    </item>

    <item android:bottom="10dp">
        <shape>
            <solid android:color="#40AAAAAA"/>
            <padding android:top="0.5dp"/>
        </shape>
    </item>

    <!-- content background -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>