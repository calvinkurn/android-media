<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.checkout">

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity
            android:name="com.tokopedia.checkout.subfeature.address_choice.view.CartAddressChoiceActivity"
            android:label="@string/checkout_module_title_activity_shipping_address"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:path="@string/path_checkout_address_selection"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.tokopedia.checkout.subfeature.multiple_address.view.MultipleAddressFormActivity"
            android:label="@string/checkout_module_title_activity_multiple_address"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name="com.tokopedia.checkout.view.ShipmentActivity"
            android:label="@string/checkout_module_title_activity_checkout"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:path="@string/path_checkout"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tokopedia.checkout.subfeature.webview.CheckoutWebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

    </application>

</manifest>
