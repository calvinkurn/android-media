<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.expresscheckout">

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity
            android:name=".view.variant.CheckoutVariantActivity"
            android:label="@string/activity_title_checkout_variant"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_merchant"
                    android:path="@string/path_checkout_variant"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.tokopedia.normalcheckout.view.NormalCheckoutActivity"
            android:label="@string/activity_title_checkout_variant"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"/>

    </application>

</manifest>