<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_insurance"
                style="@style/TransactionCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textColor="#b3000000"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:text="Asuransi Pengiriman" />

                    <ImageView
                        android:id="@+id/img_bt_insurance_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:src="@drawable/info_icon" />

                    <TextView
                        android:id="@+id/tv_insurance_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="end"
                        android:textColor="#b3000000"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        tools:text="Rp 500" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_insurance_short_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#61000000"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    tools:text="Transaksi ini tidak terlindungi asuransi" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_background"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_11"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_11">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@drawable/ic_tips_bulb" />

            <TextView
                android:id="@+id/tv_insurance_long_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5sp"
                android:textColor="#8a000000"
                android:textSize="11sp"
                android:textStyle="normal"
                tools:text="Asuransi pengiriman untuk ganti rugi barang hilang/rusak saat pengiriman hingga Rp100.000.000" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>