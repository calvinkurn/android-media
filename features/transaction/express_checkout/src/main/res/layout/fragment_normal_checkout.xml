<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom_action_container"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/v_shadow_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="bottom"
            android:background="@drawable/bottom_sheet_shadow" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/rl_bottom_action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="0.3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_total_payment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="@string/label_total_price"
                    android:textColor="@color/font_black_secondary_54"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_total_payment_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:fontFamily="sans-serif"
                android:textColor="@color/orange_payment_summary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Rp 66.000" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivCart"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/white_button_rounded"
            android:padding="@dimen/dp_4"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_new_checkout_cart"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/bt_buy"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/bg_button_orange_enabled"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/label_button_buy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>