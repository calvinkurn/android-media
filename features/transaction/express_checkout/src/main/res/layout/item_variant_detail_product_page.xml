<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_variant_name"
        style="@style/TextMidNormalBlack38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        tools:text="Warna :" />

    <TextView
        android:id="@+id/tv_variant_value"
        style="@style/TextMidNormalBlack70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@+id/tv_variant_name"
        android:layout_toRightOf="@+id/tv_variant_name"
        android:lineSpacingExtra="@dimen/sp_5"
        android:textStyle="bold"
        tools:text="Hitam" />

    <TextView
        android:id="@+id/tv_variant_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@+id/tv_variant_value"
        android:layout_toRightOf="@+id/tv_variant_value"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="@dimen/sp_17"
        android:textColor="@color/text_green"
        android:textSize="@dimen/sp_13"
        android:textStyle="normal"
        tools:text="Panduan Ukuran" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_variant_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_variant_name"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/rv_variant_options"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_line_separator" />

</RelativeLayout>