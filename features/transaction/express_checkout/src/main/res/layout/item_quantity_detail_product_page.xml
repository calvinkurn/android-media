<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_quantity_stock_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:textColor="#b3000000"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:text="Stok tersedia ( &gt;100 )" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#61000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:text="Jumlah" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btn_qty_min"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    app:srcCompat="@drawable/bg_button_counter_minus" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_qty"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/black_70"
                    android:textColorHighlight="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_16"
                    app:backgroundTint="@color/tkpd_main_green"
                    tools:text="10000" />

                <ImageView
                    android:id="@+id/btn_qty_plus"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    app:srcCompat="@drawable/bg_button_counter_plus"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_error_form_validation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="right"
                android:maxLines="2"
                android:textAlignment="gravity"
                android:textColor="@color/text_error_red"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:visibility="gone"
                tools:ignore="SmallSp"
                tools:text="Maksimal 2 broh hjadjf askjbfk kjabfdk ashfb aksbfkabsf "
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_line_separator" />

</LinearLayout>