<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_cart_gifting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_gifting_addon_rounded_grey">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_addon_product"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        app:icon_name="PRODUCT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ll_addon_info"
        app:layout_constraintTop_toTopOf="@id/ll_addon_info" />

    <LinearLayout
        android:id="@+id/ll_addon_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/icon_addon_product"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_addon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyWeight="bold"
            app:typographyType="heading_5"
            android:text="Pelengkap Pesanan (Rp5.000)"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/desc_addon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            android:text="Kemasan dan Kartu Ucapan"/>

    </LinearLayout>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iu_chevron_right"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/ll_addon_info"
        app:layout_constraintBottom_toBottomOf="@id/ll_addon_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon_name="CHEVRON_RIGHT"/>

</androidx.constraintlayout.widget.ConstraintLayout>
