<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_cart_addon_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_cb_addon_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_item_add_on_name"
        android:layout_width="95dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/loader_cb_addon_item"
        app:layout_constraintBottom_toBottomOf="@id/loader_cb_addon_item"
        app:layout_constraintStart_toEndOf="@id/loader_cb_addon_item"
        app:loader_type="rect"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="6dp"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_item_add_on_price"
        android:layout_width="88dp"
        android:layout_height="16dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/loader_cb_addon_item"
        app:layout_constraintBottom_toBottomOf="@id/loader_cb_addon_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>
