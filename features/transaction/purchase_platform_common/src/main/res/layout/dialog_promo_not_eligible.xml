<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="@dimen/dp_13"
        android:gravity="left"
        android:text="@string/label_promo_not_eligible_info"
        android:textColor="@color/Unify_NN950_96"
        android:textSize="14sp"
        app:typographyType="body_2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_promo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

    </FrameLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/label_button_continue"
        app:unifyButtonSize="medium" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_choose_other_promo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/label_button_select_other_promo"
        app:unifyButtonSize="medium"
        app:unifyButtonVariant="text" />

</LinearLayout>