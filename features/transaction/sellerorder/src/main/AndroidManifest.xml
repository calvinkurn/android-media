<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.sellerorder">

    <application
        android:allowBackup="true"
        android:label="@string/som_app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.tokopedia.sellerorder.list.presentation.activity.SomListActivity"
            android:label="@string/title_som_list"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_new_order"/>

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_ready_to_ship"/>

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_shipped"/>

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_delivered"/>

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_history"/>

            </intent-filter>
        </activity>

        <activity
            android:name=".list.presentation.activity.SomFilterActivity"
            android:label="@string/title_som_filter"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".list.presentation.activity.SomSubFilterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".detail.presentation.activity.SomDetailActivity"
            android:label="@string/title_som_detail"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">

        </activity>

        <activity
            android:name=".requestpickup.presentation.activity.SomConfirmReqPickupActivity"
            android:label="@string/title_som_confirm_req_pickup"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".confirmshipping.presentation.activity.SomConfirmShippingActivity"
            android:label="@string/title_som_confirm_shipping"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".confirmshipping.presentation.activity.SomScanResiActivity"
            android:label="@string/title_som_scan_barcode"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".detail.presentation.activity.SomDetailBookingCodeActivity"
            android:label="@string/title_som_booking_code"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

    </application>
</manifest>

