<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.sellerorder">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.tokopedia.sellerorder.list.presentation.activity.SomListActivity"
            android:label="@string/title_som_list"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_new_order"/>

                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_ready_to_ship"/>

                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_shipped"/>

                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_delivered"/>

                <data
                    android:scheme="@string/tokopedia_scheme"
                    android:host="@string/host_seller"
                    android:path="@string/path_history"/>

            </intent-filter>
        </activity>

    </application>
</manifest>

