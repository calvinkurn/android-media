<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_pof_product_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.11"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_pof_product_name"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@id/loader_pof_product_price_quantity"
        app:layout_constraintEnd_toStartOf="@id/loader_pof_product_quantity_editor"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/loader_pof_product_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.45"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_pof_product_price_quantity"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/loader_pof_product_quantity_editor"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/loader_pof_product_image"
        app:layout_constraintTop_toBottomOf="@id/loader_pof_product_name"
        app:layout_constraintWidth_percent="0.26"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_pof_product_quantity_editor"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.26"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>