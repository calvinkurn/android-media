<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_header_income_detail_attributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/divider_transparency_fee_header"
        app:layout_constraintEnd_toStartOf="@id/tv_header_income_detail_value"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:itemCount="10"
        tools:listitem="@layout/item_detail_transparency_fee_label"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_header_income_detail_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toTopOf="@id/divider_transparency_fee_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Rp10.326.000" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_transparency_fee_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>