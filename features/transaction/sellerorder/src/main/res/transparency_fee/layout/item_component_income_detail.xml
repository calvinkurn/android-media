<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/divider_vertical_income_detail"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintBottom_toTopOf="@id/divider_transparency_fee_component"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_component_income_detail_attributes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/tv_component_income_detail_value"
        app:layout_constraintStart_toEndOf="@id/divider_vertical_income_detail"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="2"
        tools:listitem="@layout/item_detail_transparency_fee_label"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_component_income_detail_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        tools:text="Rp10.326.000" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_transparency_fee_component"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/rv_component_income_detail_attributes" />

</androidx.constraintlayout.widget.ConstraintLayout>