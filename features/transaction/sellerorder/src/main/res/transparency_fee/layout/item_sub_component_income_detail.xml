<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/divider_vertical_sub_component_income_detail"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintBottom_toTopOf="@id/divider_transparency_fee_sub_component"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="0dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cg_sub_component_income_detail_attributes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        app:chipSpacingHorizontal="0dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/divider_transparency_fee_sub_component"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/divider_vertical_sub_component_income_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_goneMarginBottom="0dp" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_transparency_fee_sub_component"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>