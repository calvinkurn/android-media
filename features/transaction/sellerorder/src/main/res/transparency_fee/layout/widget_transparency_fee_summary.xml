<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.ContainerUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_transparency_fee_summary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <View
            android:id="@+id/shadow_transparency_fee_summary"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/transparency_fee_summary_shadow"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_summary_income_detail_attributes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            app:layout_constraintEnd_toStartOf="@id/tv_summary_income_detail_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shadow_transparency_fee_summary"
            tools:itemCount="6"
            tools:listitem="@layout/item_detail_transparency_fee_label"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_summary_income_detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shadow_transparency_fee_summary"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            tools:text="Rp10.326.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_summary_income_detail_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_summary_income_detail_attributes"
            app:typographyType="display_3"
            tools:text="Sebelum pesanan selesai, nominal estimasi masih dapat berubah sesuai kondisi pesanan." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.ContainerUnify>