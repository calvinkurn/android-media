<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_reject_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            android:textColor="@color/Unify_NN950_96"
            android:text="@string/tolak_pesanan"
            tools:text="@string/tolak_pesanan"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/rb_reject"
            android:layout_marginBottom="20dp"/>

        <RadioButton
            android:id="@+id/rb_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/Unify_NN50"
            android:layout_marginTop="16dp"
            android:layout_below="@id/label_reject"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>