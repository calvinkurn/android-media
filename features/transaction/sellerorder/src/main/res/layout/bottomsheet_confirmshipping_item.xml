<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="22dp"
    android:paddingBottom="16dp"
    android:orientation="horizontal">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="3dp"
        android:id="@+id/tv_info_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_confirm_shipping"
        android:gravity="center"
        android:textColor="@color/Unify_BN50"
        app:typographyType="display_2"
        tools:text="1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_info"
        android:paddingHorizontal="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        tools:text="info text info text info text info text info text info text info text info text info text info text info text "
        tools:ignore="RtlSymmetry" />


</LinearLayout>