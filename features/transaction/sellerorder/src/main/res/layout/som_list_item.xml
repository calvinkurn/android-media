<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_8">

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_status_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:background="@color/green_header"
            android:gravity="center"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="@string/status_new"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_18">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typographyType="body_3"
                tools:text="INV/20161025/XVI/X/51234657"
                app:typographyWeight="bold"/>

            <LinearLayout
                android:id="@+id/ll_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal"
                android:layout_below="@id/label_invoice">

                <RelativeLayout
                    android:id="@+id/rl_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <android.support.v7.widget.CardView
                        android:id="@+id/ic_product_card"
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_52"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="@dimen/dp_0"
                        android:layout_margin="5dp"
                        android:layout_alignParentTop="true">

                        <ImageView
                            android:id="@+id/ic_product"
                            android:layout_width="@dimen/dp_52"
                            android:layout_height="@dimen/dp_52"
                            tools:ignore="ContentDescription" />

                    </android.support.v7.widget.CardView>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/label_date_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/ic_product_card"
                        android:layout_toEndOf="@id/ic_product_card"
                        app:typographyType="small"
                        tools:text="25 Des 2018"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/label_buyer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ic_product_card"
                        android:layout_toEndOf="@id/ic_product_card"
                        android:layout_below="@id/label_date_order"
                        app:typographyType="body_3"
                        android:layout_marginTop="@dimen/dp_2"
                        tools:text="Delia Nelson"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/label_due_response"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        app:typographyType="small"
                        android:text="@string/response_due"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/ic_label_due_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="@dimen/dp_0"
                        android:background="@drawable/bg_due_response"
                        android:layout_below="@id/label_due_response"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_9">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ic_time"
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                app:srcCompat="@drawable/ic_time"
                                tools:ignore="ContentDescription"
                                android:paddingTop="@dimen/dp_4"
                                android:paddingLeft="@dimen/dp_4"
                                android:paddingStart="@dimen/dp_4"/>

                            <com.tokopedia.unifyprinciples.Typography
                                android:id="@+id/label_due_response_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:typographyType="small"
                                app:typographyWeight="bold"
                                android:textColor="@color/white"
                                tools:text="@string/due_day"
                                android:padding="@dimen/dp_4"
                                android:layout_marginLeft="@dimen/dp_2"
                                android:layout_marginStart="@dimen/dp_2"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
