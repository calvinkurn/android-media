<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_8">

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:background="@color/green_header"
            android:gravity="center"
            app:typographyType="small"
            android:textStyle="bold"
            tools:text="@string/status_new"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_18">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/invoice_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typographyType="body_3"
                tools:text="INV/20161025/XVI/X/51234657"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/ll_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal"
                android:layout_below="@id/invoice_label">

                <RelativeLayout
                    android:id="@+id/rl_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <ImageView
                        android:id="@+id/ic_product"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:src="@drawable/ic_store"
                        tools:ignore="ContentDescription"
                        android:layout_alignParentTop="true"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/date_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/ic_product"
                        android:layout_toEndOf="@id/ic_product"
                        app:typographyType="small"
                        tools:text="25 Des 2018"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/name_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ic_product"
                        android:layout_toEndOf="@id/ic_product"
                        android:layout_below="@id/date_order"
                        app:typographyType="body_3"
                        android:layout_marginTop="@dimen/dp_2"
                        tools:text="Delia Nelson"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/response_due_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        app:typographyType="small"
                        android:text="@string/response_due"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:typographyType="small"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        tools:text="@string/due_day"
                        android:background="@drawable/bg_due_response"
                        android:layout_below="@id/response_due_label"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_9"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
