<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shipping_title"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:text="@string/detail_pengiriman"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Detail Pengiriman" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/kurir_label"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:text="@string/kurir_pengiriman"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipping_title"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="@string/kurir_pengiriman" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_name"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toEndOf="@+id/kurir_label"
        app:layout_constraintTop_toBottomOf="@+id/shipping_title"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="GO-JEK Same Day" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipping_price"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_name"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Rp15.000" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_harus_sesuai"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="wrap_content"
        app:labelTitle="@string/harus_sesuai"
        app:labelType="general_light_orange"
        app:layout_constraintStart_toStartOf="@+id/tv_shipping_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipping_price" />

    <ImageView
        android:contentDescription="@string/icon_harus_sesuai"
        android:id="@+id/ic_harus_sesuai"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_width="@dimen/dp_18"
        app:layout_constraintBottom_toBottomOf="@+id/label_harus_sesuai"
        app:layout_constraintStart_toEndOf="@+id/label_harus_sesuai"
        app:layout_constraintTop_toTopOf="@+id/label_harus_sesuai"
        app:srcCompat="@drawable/ic_som_info" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_driver"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_3"
        app:layout_constraintBottom_toTopOf="@+id/alamat_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_harus_sesuai">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:id="@+id/iv_driver"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_48"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="@dimen/dp_48"
                app:srcCompat="@drawable/ic_driver_default"
                tools:ignore="ContentDescription" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_driver_name"
                android:inputType="none"
                android:layout_alignTop="@+id/iv_driver"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_driver"
                android:layout_toLeftOf="@+id/driver_call_btn"
                android:layout_toRightOf="@+id/iv_driver"
                android:layout_toStartOf="@+id/driver_call_btn"
                android:layout_width="wrap_content"
                android:textIsSelectable="true"
                android:textSize="@dimen/sp_12"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="@string/tv_driver_name_example" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_driver_phone"
                android:inputType="none"
                android:layout_below="@+id/tv_driver_name"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_driver"
                android:layout_toLeftOf="@+id/driver_call_btn"
                android:layout_toRightOf="@+id/iv_driver"
                android:layout_toStartOf="@+id/driver_call_btn"
                android:layout_width="wrap_content"
                android:textIsSelectable="true"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="@string/tv_driver_phone_example" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_driver_license"
                android:layout_below="@+id/tv_driver_phone"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_driver"
                android:layout_toLeftOf="@+id/driver_call_btn"
                android:layout_toRightOf="@+id/iv_driver"
                android:layout_toStartOf="@+id/driver_call_btn"
                android:layout_width="wrap_content"
                android:textColor="@color/Neutral_N700_68"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="@string/tv_driver_license_example" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/driver_call_btn"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:text="@string/tv_driver_call_btn"
                app:unifyButtonSize="medium"
                app:unifyButtonType="alternate"
                app:unifyButtonVariant="ghost" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/alamat_label"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:text="@string/alamat_pengiriman"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_driver"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_receiver_name"
        android:inputType="none"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:textIsSelectable="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="@+id/label_harus_sesuai"
        app:layout_constraintTop_toBottomOf="@+id/card_driver"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="AS Misbeh" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_receiver_phone"
        android:inputType="none"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:textIsSelectable="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="@+id/tv_receiver_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_name"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="08113400775" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_receiver_street"
        android:inputType="none"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_width="0dp"
        android:lineSpacingMultiplier="1"
        android:scrollHorizontally="false"
        android:textColor="@color/Neutral_N700_96"
        android:textIsSelectable="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_receiver_phone"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_phone"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Wisma 77 Tower 2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_receiver_district"
        android:inputType="none"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_width="0dp"
        android:lineSpacingMultiplier="1"
        android:scrollHorizontally="false"
        android:textColor="@color/Neutral_N700_96"
        android:textIsSelectable="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_receiver_street"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_street"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Slipi, Jakarta Barat 14410" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_receiver_province"
        android:inputType="none"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_width="0dp"
        android:lineSpacingMultiplier="1"
        android:scrollHorizontally="false"
        android:textColor="@color/Neutral_N700_96"
        android:textIsSelectable="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_receiver_district"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_district"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Slipi, Jakarta Barat 14410" />

    <com.tokopedia.unifyprinciples.Typography
        android:focusable="false"
        android:id="@+id/copy_address_btn"
        android:inputType="none"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_width="0dp"
        android:lineSpacingMultiplier="0.8"
        android:scrollHorizontally="false"
        android:text="@string/salin_alamat"
        android:textColor="@color/g_500"
        android:textIsSelectable="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_receiver_province"
        app:layout_constraintTop_toBottomOf="@+id/tv_receiver_province"
        tools:text="@string/salin_alamat" />

    <RelativeLayout
        android:background="@color/dropshipper_bg"
        android:id="@+id/rl_som_dropshipper"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="@+id/copy_address_btn"
        app:layout_constraintTop_toBottomOf="@+id/copy_address_btn">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_som_dropshipper_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/som_dropshipper_label"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_som_dropshipper_name"
            android:layout_alignTop="@+id/tv_som_dropshipper_label"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_toEndOf="@+id/tv_som_dropshipper_label"
            android:layout_toRightOf="@+id/tv_som_dropshipper_label"
            android:layout_width="wrap_content"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_som_dropshipper_phone"
            android:layout_alignLeft="@id/tv_som_dropshipper_name"
            android:layout_alignStart="@id/tv_som_dropshipper_name"
            android:layout_below="@id/tv_som_dropshipper_name"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_width="wrap_content"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_booking_code"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_som_dropshipper">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/booking_code_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/kode_booking"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="@string/kode_booking" />

        <RelativeLayout
            android:id="@+id/rl_wajib_dicantumkan"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toEndOf="@id/booking_code_title"
            android:layout_toRightOf="@id/booking_code_title"
            android:layout_width="wrap_content">

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/label_wajib_dicantumkan"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:labelTitle="@string/wajib_dicantumkan"
                app:labelType="general_light_orange" />

            <ImageView
                android:contentDescription="@string/icon_wajib_dicantumkan"
                android:id="@+id/ic_wajib_dicantumkan"
                android:layout_height="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@id/label_wajib_dicantumkan"
                android:layout_toRightOf="@id/label_wajib_dicantumkan"
                android:layout_width="@dimen/dp_18"
                app:srcCompat="@drawable/ic_som_info" />

        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/booking_code_value"
            android:inputType="none"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/booking_code_title"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:textIsSelectable="true"
            tools:text="ABCDEFHIJK" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/booking_code_see_btn"
            android:layout_alignBottom="@id/booking_code_value"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/booking_code_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/lihat_caps"
            android:textColor="@color/g_500"
            tools:text="@string/lihat_caps" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>