<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_summary_income_detail_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rv_summary_income_detail_attributes"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        tools:text="Total Estimasi" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_summary_income_detail_attributes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
        app:layout_constraintStart_toEndOf="@id/tv_summary_income_detail_label"
        app:layout_constraintTop_toTopOf="@id/tv_summary_income_detail_label"
        app:layout_constraintEnd_toStartOf="@id/tv_summary_income_detail_value"
        tools:listitem="@layout/item_detail_income_label"
        tools:itemCount="6"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_summary_income_detail_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_summary_income_detail_label"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Rp10.326.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_summary_income_detail_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/Unify_NN600"
        app:typographyType="display_3"
        app:layout_constraintTop_toBottomOf="@id/rv_summary_income_detail_attributes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Sebelum pesanan selesai, nominal estimasi masih dapat berubah sesuai kondisi pesanan."/>

</androidx.constraintlayout.widget.ConstraintLayout>