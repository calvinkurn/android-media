<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyWeight="bold"
                app:typographyType="heading_4"
                android:text="@string/title_tanggal"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:id="@+id/rl_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_below="@id/label_date">

                <ImageView
                    android:id="@+id/iv_calendar"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    app:srcCompat="@drawable/ic_som_filter_calendar"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_start_date_wrapper"
                        style="@style/HintTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="@string/mulai_dari"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:textColorHint="@color/Neutral_N700_68">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="false"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/Neutral_N700_96"
                            android:textSize="@dimen/sp_14"
                            android:text="@string/mulai_dari"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_end_date_wrapper"
                        style="@style/HintTextInputLayout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="@string/sampai"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:textColorHint="@color/Neutral_N700_68">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="false"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:textColor="@color/Neutral_N700_96"
                            android:textSize="@dimen/sp_14"
                            android:text="@string/sampai"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@color/grey_divider"
                android:layout_below="@id/rl_date"
                android:layout_marginTop="@dimen/dp_16"/>

            <RelativeLayout
                android:id="@+id/rl_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_1"
                android:clickable="true"
                android:focusable="true">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/label_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typographyWeight="bold"
                    app:typographyType="heading_4"
                    android:text="@string/title_status"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/dp_16"
                    tools:ignore="RelativeOverlap"
                    android:textColor="@color/Neutral_N700_96"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/label_substatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typographyWeight="reguler"
                    app:typographyType="body_3"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@string/subtitle_status"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/label_status"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:textColor="@color/Neutral_N700_44"/>

                <ImageView
                    android:id="@+id/ic_choose_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="28dp"
                    android:layout_marginRight="28dp"
                    android:layout_marginBottom="@dimen/dp_20"
                    app:srcCompat="@drawable/ic_som_chevron_right"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@color/grey_divider"
                android:layout_below="@id/rl_status"
                android:layout_marginTop="@dimen/dp_12"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_2"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                app:typographyWeight="bold"
                app:typographyType="heading_4"
                android:text="@string/title_type"
                android:layout_margin="@dimen/dp_16"
                android:textColor="@color/Neutral_N700_96"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_see_all_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:typographyWeight="bold"
                app:typographyType="heading_4"
                android:text="@string/title_see_all"
                android:layout_margin="@dimen/dp_16"
                android:textColor="@color/g_500"/>

            <com.tokopedia.sellerorder.common.widget.CustomMultipleFilterView
                android:id="@+id/quick_filter_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_below="@id/label_type"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"/>

            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@color/grey_divider"
                android:layout_below="@id/quick_filter_order_type"
                android:layout_marginTop="@dimen/dp_12"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_courier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:typographyWeight="bold"
                app:typographyType="heading_4"
                android:text="@string/title_courier"
                android:layout_margin="@dimen/dp_16"
                android:textColor="@color/Neutral_N700_96"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_see_all_courier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:typographyWeight="bold"
                app:typographyType="heading_4"
                android:text="@string/title_see_all"
                android:layout_margin="@dimen/dp_16"
                android:textColor="@color/g_500"/>

            <com.tokopedia.sellerorder.common.widget.CustomMultipleFilterView
                android:id="@+id/quick_filter_order_courier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_below="@id/label_courier"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_25"/>

        </RelativeLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/rl_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_25"
        android:layout_alignParentBottom="true">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_terapkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:unifyButtonVariant="filled"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            android:text="@string/terapkan"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"/>

    </FrameLayout>

</RelativeLayout>
