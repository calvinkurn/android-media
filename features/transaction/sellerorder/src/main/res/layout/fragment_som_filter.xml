<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyWeight="bold"
        app:typographyType="heading_4"
        android:text="@string/title_tanggal"
        android:layout_margin="@dimen/dp_16"/>

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_calendar"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            app:srcCompat="@drawable/ic_calendar"
            tools:ignore="ContentDescription"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/et_start_date_wrapper"
            style="@style/HintTextInputLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/mulai_dari"
            android:layout_toRightOf="@id/iv_calendar"
            android:layout_toEndOf="@id/iv_calendar"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="text"
                android:maxLength="60"
                android:maxLines="1"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColor="#ae31353b"
                android:textSize="@dimen/sp_14"
                android:text="@string/mulai_dari"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/et_end_date_wrapper"
            style="@style/HintTextInputLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/sampai"
            android:layout_toRightOf="@id/et_start_date_wrapper"
            android:layout_toEndOf="@id/et_start_date_wrapper"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:inputType="text"
                android:maxLength="60"
                android:maxLines="1"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textColor="#ae31353b"
                android:textSize="@dimen/sp_14"
                android:text="@string/sampai"/>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/grey_divider"
        app:layout_constraintTop_toBottomOf="@id/rl_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_16"/>

    <RelativeLayout
        android:id="@+id/rl_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyWeight="bold"
            app:typographyType="heading_4"
            android:text="@string/title_status"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dp_16"
            tools:ignore="RelativeOverlap" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_substatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/subtitle_status"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/label_status"
            android:layout_marginBottom="@dimen/dp_12"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            tools:ignore="ContentDescription"
            app:srcCompat="@drawable/ic_right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/grey_divider"
        app:layout_constraintTop_toBottomOf="@id/rl_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider_2"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyWeight="bold"
        app:typographyType="heading_4"
        android:text="@string/title_type"
        android:layout_margin="@dimen/dp_16"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_see_all_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyWeight="bold"
        app:typographyType="heading_4"
        android:text="@string/title_see_all"
        android:layout_margin="@dimen/dp_16"
        android:textColor="@color/green_text"/>

    <com.tokopedia.design.quickfilter.custom.CustomViewRounderCornerFilterView
        android:id="@+id/quick_filter_order_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/label_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"/>

    <View
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/grey_divider"
        app:layout_constraintTop_toBottomOf="@id/quick_filter_order_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider_3"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyWeight="bold"
        app:typographyType="heading_4"
        android:text="@string/title_courier"
        android:layout_margin="@dimen/dp_16"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_see_all_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyWeight="bold"
        app:typographyType="heading_4"
        android:text="@string/title_see_all"
        android:layout_margin="@dimen/dp_16"
        android:textColor="@color/green_text"/>

    <com.tokopedia.design.quickfilter.custom.CustomViewRounderCornerFilterView
        android:id="@+id/quick_filter_order_courier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/label_courier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"/>

    <RelativeLayout
        android:id="@+id/rl_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.tokopedia.unifycomponents.UnifyButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:unifyButtonVariant="filled"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            android:text="@string/terapkan"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/grey_shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rl_button"/>

</android.support.constraint.ConstraintLayout>