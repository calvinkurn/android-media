<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:background="@color/white">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_performance_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tickerType="warning"
        app:tickerShapeType="loose"
        android:layout_marginTop="@dimen/dp_8"
        app:closeButtonVisibility="gone"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_buyer_request_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/ticker_performance_info"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:lineSpacingMultiplier="1.5"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_0"
        app:cardCornerRadius="@dimen/dp_6"
        android:layout_below="@id/tv_buyer_request_cancel"
        app:cardBackgroundColor="@color/grey_200"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/buyer_request_cancel_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/Neutral_N700_96"
            android:padding="@dimen/dp_10"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_buyer_req_cancel_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/card_reason">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_chat_buyer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/som_chat_buyer"
            app:unifyButtonVariant="ghost"
            app:unifyButtonType="main"
            android:layout_marginBottom="@dimen/dp_20"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_tolak_pesanan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tolak_pesanan"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"/>

    </LinearLayout>

</RelativeLayout>