<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/header_divider_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/header_resi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/nomor_resi"
        android:text="@string/nomor_resi"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_divider_3"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Neutral_N700_44"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/header_resi_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="body_2"
        app:layout_constraintTop_toBottomOf="@id/header_resi_label"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/header_copy_resi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/salin_caps"
        android:text="@string/salin_caps"
        android:textColor="@color/g_500"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_resi_label"
        app:layout_constraintBottom_toBottomOf="@id/header_resi_value"
        android:layout_marginTop="@dimen/dp_16"/>

</androidx.constraintlayout.widget.ConstraintLayout>