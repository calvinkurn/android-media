<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/layout_lvl1">

    <View
        android:id="@+id/header_divider_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/header_resi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/nomor_resi"
        android:text="@string/nomor_resi"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_divider_3"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:textColor="@color/Neutral_N700_44"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/header_resi_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        app:layout_constraintTop_toBottomOf="@id/header_resi_label"
        app:layout_constraintStart_toStartOf="parent"
        android:textIsSelectable="true"/>

    <ImageView
        android:id="@+id/header_copy_resi"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/header_resi_value"
        app:layout_constraintTop_toTopOf="@+id/header_resi_value"
        app:layout_constraintBottom_toBottomOf="@+id/header_resi_value"
        app:srcCompat="@drawable/ic_copy"/>

</androidx.constraintlayout.widget.ConstraintLayout>