<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvBulkAcceptOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/som_list_bottom_sheet_bulk_accept_order_description"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBulkAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvBulkAcceptOrder"
            tools:itemCount="20"
            tools:listitem="@layout/item_som_list_bulk_accept_order" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnBulkAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/som_list_btn_bulk_accept_order"
            app:unifyButtonSize="large" />
    </FrameLayout>
</LinearLayout>
