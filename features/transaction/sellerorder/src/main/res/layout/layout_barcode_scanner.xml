<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_framing_rect_height="200dp"
        app:zxing_framing_rect_width="350dp" />

    <com.tokopedia.sellerorder.confirmshipping.presentation.customview.CustomizedViewFinderView
        android:id="@+id/zxing_viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:zxing_possible_result_points="@color/_dms_zxing_custom_possible_result_points"
        app:zxing_result_view="@color/_dms_zxing_custom_result_view"
        app:zxing_viewfinder_laser="@color/Unify_GN500"
        app:zxing_viewfinder_mask="@color/_dms_zxing_custom_viewfinder_mask" />

    <TextView
        android:id="@+id/zxing_status_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/dp_150"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:background="@color/zxing_transparent"
        android:gravity="center_horizontal"
        android:text="@string/scan_barcode_msg"
        android:textColor="@color/_dms_zxing_status_text"/>

</merge>