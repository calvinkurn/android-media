<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widgetSelectDateFilter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSelectDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lvl3"
        android:layout_alignParentStart="true"
        android:text="@string/select_date"
        android:textColor="@color/light_N700_44"
        app:typographyType="body_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_above="@+id/dividerWidgetSomFilter"
        app:srcCompat="@drawable/ic_calendar"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerWidgetSomFilter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_below="@+id/tvSelectDateText"/>

</RelativeLayout>