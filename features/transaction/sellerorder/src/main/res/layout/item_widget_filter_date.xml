<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetSelectDateFilter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSelectDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="11dp"
        android:text="@string/select_date"
        android:textColor="@color/Unify_N700_44"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_1"
        tools:background="@drawable/bg_som_filter_date_border" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tvSelectDateText"
        app:layout_constraintEnd_toEndOf="@id/tvSelectDateText"
        app:layout_constraintTop_toTopOf="@id/tvSelectDateText"
        app:srcCompat="@drawable/ic_calendar" />

</androidx.constraintlayout.widget.ConstraintLayout>