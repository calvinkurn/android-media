<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_product_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/spacing_lvl1"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_product_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            android:textColor="@color/Unify_N700_96"
            tools:text="Bonusin apa aja yak bang" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/divider_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_product_notes"
            app:layout_constraintTop_toBottomOf="@+id/cv_product_img"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_product_img"
            android:layout_width="@dimen/som_list_product_image_size"
            android:layout_height="@dimen/som_list_product_image_size"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider_product"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="@dimen/som_list_product_image_size"
                android:layout_height="@dimen/som_list_product_image_size"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_name"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_product_img"
            app:layout_constraintTop_toTopOf="@id/cv_product_img"
            app:typographyType="heading_6"
            tools:text="Fujifilm Instax Square Fujifilm Instax Square Fujifilm Instax Square" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            app:layout_constraintStart_toEndOf="@id/cv_product_img"
            app:layout_constraintBottom_toTopOf="@id/divider_product"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            android:textColor="@color/Unify_N700_96"
            tools:text="1 x Rp 2.913.000"
            android:layout_marginStart="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>