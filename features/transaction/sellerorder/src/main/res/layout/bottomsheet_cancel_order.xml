<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_16">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_cancel_notes"
        android:contentDescription="@string/content_desc_tf_cancel_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:imeOptions="actionDone"
        android:layout_marginBottom="@dimen/dp_16"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/tf_cancel_notes"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_cancel_order_canceled"
            android:contentDescription="@string/content_desc_btn_cancel_order_canceled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_order_batal"
            app:unifyButtonVariant="ghost"
            app:unifyButtonType="alternate"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_cancel_order_confirmed"
            android:contentDescription="@string/content_desc_btn_cancel_order_confirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_konfirmasi"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>