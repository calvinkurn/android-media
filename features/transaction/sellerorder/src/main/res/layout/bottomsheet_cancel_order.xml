<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_cancel_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tf_cancel_notes"
        android:layout_marginBottom="@dimen/dp_30">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_cancel_order_canceled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_order_batal"
            app:unifyButtonVariant="ghost"
            app:unifyButtonType="alternate"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_cancel_order_confirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_order_konfirmasi"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"/>

    </LinearLayout>

</RelativeLayout>