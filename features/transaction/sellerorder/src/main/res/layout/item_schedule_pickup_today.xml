<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_option_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N700_96"
        android:text="asdada"
        android:visibility="visible"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/time_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="heading_5"
        android:textColor="@color/Unify_N700_96"
        android:layout_below="@id/tv_today"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/rb_option"
        android:layout_marginTop="@dimen/dp_18"
        android:text="asdada"
        android:visibility="visible"/>

    <RadioButton
        android:id="@+id/rb_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/divider_label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/Unify_N75"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_below="@id/time_today"
        android:visibility="visible"/>

    <View
        android:id="@+id/divider_label_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/Unify_N75"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_below="@id/time_today"
        android:visibility="gone"/>

</RelativeLayout>