<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pickTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="11dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/bg_round_corner_nn300"
        android:text="@string/bottomsheet_order_extension_request_other_options_text_field_time"
        android:gravity="center_vertical"
        android:drawablePadding="6dp"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pickTimeText"
        app:layout_constraintEnd_toStartOf="@id/ivInformation"
        android:clickable="true"
        android:focusable="true"
        app:typographyType="body_3"
        android:textColor="@color/Unify_NN600"
        android:layout_marginEnd="16dp" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ivInformation"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:icon_name="INFORMATION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDescription"
        app:layout_constraintBottom_toBottomOf="@id/tvDescription"/>
</androidx.constraintlayout.widget.ConstraintLayout>