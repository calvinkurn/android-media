<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/layout_lvl2"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginBottom="@dimen/layout_lvl3">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/payments_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/informasi_pembayaran"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="@string/informasi_pembayaran" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payments_title"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Harga (4 Barang)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payments_title"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Rp10.326.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shipping_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_price_label"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Total Ongkos Kirim (6kg)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shipping_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_price_value"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Rp50.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/insurance_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/insurance_price_label"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shipping_price_label"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="@string/insurance_price_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/insurance_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shipping_price_value"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Rp450" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/additional_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/additional_price_label"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insurance_price_label"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="@string/additional_price_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/additional_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insurance_price_value"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Rp200" />

    <View
        android:id="@+id/divider_payments"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/Neutral_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/additional_price_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/total_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:gravity="center_vertical"
        android:text="@string/total_price_label"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_payments"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="@string/total_price_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/total_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:gravity="center_vertical"
        android:textColor="@color/Yellow_Y500"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_payments"
        app:typographyWeight="bold"
        tools:text="Rp10.376.650" />

</androidx.constraintlayout.widget.ConstraintLayout>