<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/bmgmLblTotalPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/mini_cart_widget_label_total_price"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toTopOf="@+id/bmgmTvTotalPrice"
        app:layout_constraintEnd_toStartOf="@+id/btnBmgmOpenCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBmgmOpenCart"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBmgmFinalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mini_cart_widget_label_total_price_unavailable_default"
        app:layout_constraintBottom_toBottomOf="@+id/btnBmgmOpenCart"
        app:layout_constraintStart_toStartOf="@+id/bmgmLblTotalPrice"
        app:layout_constraintTop_toBottomOf="@+id/bmgmLblTotalPrice"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        tools:text="Rp3.435.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBmgmPriceBeforeDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@+id/tvBmgmFinalPrice"
        app:layout_constraintEnd_toStartOf="@+id/btnBmgmOpenCart"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/tvBmgmFinalPrice"
        app:layout_constraintTop_toTopOf="@+id/tvBmgmFinalPrice"
        app:typographyType="small"
        tools:text="Rp4.300.000" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnBmgmOpenCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:enabled="false"
        android:text="@string/mini_cart_check_cart"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:unifyButtonSize="medium" />
</merge>