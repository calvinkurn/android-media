<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bmgm_mini_cart_upselling_group"
    android:padding="4dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBmgmUpsellingGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:itemCount="3"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_bmgm_mini_cart_upselling_product"
        tools:orientation="horizontal" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bmgm_mini_cart_upselling_discount"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/Unify_NN0"
        app:layout_constraintEnd_toEndOf="@+id/rvBmgmUpsellingGroup"
        app:layout_constraintStart_toStartOf="@+id/rvBmgmUpsellingGroup"
        app:layout_constraintTop_toBottomOf="@+id/rvBmgmUpsellingGroup"
        app:typographyType="small"
        app:typographyWeight="bold"
        tools:text="diskon 25%" />
</androidx.constraintlayout.widget.ConstraintLayout>