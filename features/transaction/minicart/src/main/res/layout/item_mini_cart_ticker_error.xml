<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:closeButtonVisibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerShapeType="loose"
        app:tickerType="error" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:text="Lihat"
        android:textColor="@color/unify_G500"
        app:layout_constraintBottom_toBottomOf="@+id/ticker_error"
        app:layout_constraintEnd_toEndOf="@+id/ticker_error"
        app:layout_constraintTop_toTopOf="@+id/ticker_error"
        app:typographyType="body_3" />

</androidx.constraintlayout.widget.ConstraintLayout>
