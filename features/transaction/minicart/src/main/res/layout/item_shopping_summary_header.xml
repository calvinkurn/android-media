<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iu_shop_badge"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:scaleType="fitCenter"
        app:unify_image_corner_radius="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        app:layout_constraintStart_toEndOf="@id/iu_shop_badge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iu_shop_badge"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        tools:text="Shop Store" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tp_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iu_shop_badge"
        app:typographyType="small"
        android:textColor="@color/Unify_NN600"
        tools:text="Jakarta Selatan" />

</androidx.constraintlayout.widget.ConstraintLayout>