<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.minicart">

    <application>
        <activity
            android:name="com.tokopedia.minicart.bmgm.presentation.activity.BmgmMiniCartActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Translucent">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- tokopedia-android-internal://global/bmgm-mini-cart -->
                <data
                    android:host="@string/host_global"
                    android:path="@string/path_bmgm_mini_cart"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
    </application>
</manifest>