<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_area_label_static="true"
        app:text_field_label="@string/placeholder_email"
        app:text_field_label_static="true"
        app:text_field_placeholder="@string/placeholder_email" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_send_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:text="@string/btn_send_email_label"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:unifyButtonVariant="filled" />

</LinearLayout>