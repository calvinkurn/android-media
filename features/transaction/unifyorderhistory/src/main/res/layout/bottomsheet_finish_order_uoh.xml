<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/finish_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/uoh_finish_order_desc"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:textColor="@color/Unify_NN950_96"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_finish_detail_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/finish_detail_1"
        app:layout_constraintTop_toBottomOf="@id/finish_desc"
        app:icon_name="PRODUCT"
        android:layout_marginTop="20dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/finish_detail_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ic_finish_detail_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_finish_detail_1"
        app:layout_constraintBottom_toBottomOf="@id/ic_finish_detail_1"
        android:text="@string/uoh_finish_order_1"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:textColor="@color/Unify_NN950_96"
        android:layout_marginStart="16dp"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_finish_detail_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_finish_detail_1"
        app:layout_constraintEnd_toStartOf="@id/finish_detail_2"
        app:icon_name="RELOAD_24H"
        android:padding="@dimen/dp_15"
        android:layout_marginTop="16dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/finish_detail_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ic_finish_detail_2"
        app:layout_constraintStart_toEndOf="@id/ic_finish_detail_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ic_finish_detail_2"
        android:text="@string/uoh_finish_order_2"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:textColor="@color/Unify_NN950_96"
        android:layout_marginStart="16dp"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_ajukan_komplain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/uoh_btn_ajukan_komplain"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAllCaps="false"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:unifyButtonVariant="ghost"
        app:layout_constraintTop_toBottomOf="@id/finish_detail_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_finish_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/uoh_btn_finish_order"
        android:textAllCaps="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/finish_detail_2"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>