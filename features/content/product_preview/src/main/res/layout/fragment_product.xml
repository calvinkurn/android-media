<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Static_Black">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_content_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_indicator_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/product_label_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="4dp"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toTopOf="@id/rv_indicator_product"
            app:layout_constraintStart_toStartOf="parent"
            app:typographyType="body_2"
            tools:text="2/16 â€¢ Winnie the Pooh" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_indicator_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="1"
            tools:listitem="@layout/item_product_indicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>