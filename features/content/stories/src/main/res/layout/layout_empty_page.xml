<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Static_Black"
    >

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_close_loading"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="CLOSE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_stories_no_content"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="IMAGE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_stories_no_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_common_space_8"
        android:text="@string/stories_content_unavailable"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintEnd_toEndOf="@+id/iv_stories_no_content"
        app:layout_constraintStart_toStartOf="@+id/iv_stories_no_content"
        app:layout_constraintTop_toBottomOf="@id/iv_stories_no_content"
        app:typographyType="heading_3" />
</androidx.constraintlayout.widget.ConstraintLayout>