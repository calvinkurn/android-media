<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    tools:background="@color/stories_background_dms">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_group_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_type="circle"
        tools:srcCompat="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_group_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:typographyType="body_3"
        android:maxLines="1"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintEnd_toEndOf="@id/img_group_image"
        app:layout_constraintStart_toStartOf="@id/img_group_image"
        app:layout_constraintTop_toBottomOf="@id/img_group_image"
        tools:text="Flash Sale" />

</androidx.constraintlayout.widget.ConstraintLayout>