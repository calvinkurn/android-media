<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="@drawable/fg_play_widget_card_small_channel"
    >

    <FrameLayout
        android:id="@+id/fl_border"
        android:layout_width="@dimen/play_widget_small_width"
        android:layout_height="@dimen/play_widget_small_height"
        android:background="@drawable/bg_play_widget_small_live_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        />

    <com.tokopedia.play_common.view.RoundedConstraintLayout
        android:id="@+id/cl_media"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_margin="@dimen/play_widget_dp_3"
        app:cornerRadius="@dimen/play_widget_small_radius"
        app:layout_constraintBottom_toBottomOf="@id/fl_border"
        app:layout_constraintEnd_toEndOf="@id/fl_border"
        app:layout_constraintStart_toStartOf="@id/fl_border"
        app:layout_constraintTop_toTopOf="@id/fl_border"
        >

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            />

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/pv_video"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            app:layout_constraintEnd_toEndOf="@id/iv_cover"
            app:layout_constraintStart_toStartOf="@id/iv_cover"
            app:layout_constraintTop_toTopOf="@id/iv_cover"
            app:resize_mode="zoom"
            app:shutter_background_color="@color/transparent"
            app:surface_type="texture_view"
            app:use_artwork="false"
            app:use_controller="false"
            />

    </com.tokopedia.play_common.view.RoundedConstraintLayout>

    <com.tokopedia.play_common.view.RoundedImageView
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:background="@drawable/bg_play_widget_small_text_overlay"
        app:cornerRadius="@dimen/play_widget_small_radius"
        app:layout_constraintBottom_toBottomOf="@id/cl_media"
        app:layout_constraintEnd_toEndOf="@id/cl_media"
        app:layout_constraintStart_toStartOf="@id/cl_media"
        app:layout_constraintTop_toTopOf="@id/cl_media"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/play_widget_dp_6"
        android:layout_marginTop="@dimen/play_widget_dp_6"
        app:layout_constraintStart_toStartOf="@id/cl_media"
        app:layout_constraintTop_toTopOf="@id/cl_media"
        app:srcCompat="@drawable/ic_discount_small"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_total_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/play_view_stats_info_height"
        android:layout_marginStart="@dimen/spacing_lvl1"
        android:layout_marginTop="@dimen/play_widget_dp_6"
        android:layout_marginEnd="@dimen/play_widget_dp_6"
        android:background="@drawable/bg_play_stats_info_view_badge"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@id/cl_media"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_discount"
        app:layout_constraintTop_toTopOf="@id/cl_media"
        app:layout_goneMarginStart="@dimen/play_widget_dp_6"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_total_view"
            android:layout_width="@dimen/spacing_lvl4"
            android:layout_height="@dimen/spacing_lvl4"
            android:layout_marginStart="@dimen/play_view_stats_info_view_padding"
            android:layout_marginTop="@dimen/play_view_stats_info_view_padding"
            android:layout_marginBottom="@dimen/play_view_stats_info_view_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_play_eye_white"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl1"
            android:layout_marginEnd="@dimen/play_view_stats_info_view_padding"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Neutral_N0"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/iv_total_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_total_view"
            app:layout_constraintTop_toTopOf="@id/iv_total_view"
            app:typographyType="small"
            tools:text="10,0 rb"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintBottom_toTopOf="@id/tv_upcoming"
        app:layout_constraintEnd_toEndOf="@id/cl_media"
        app:layout_constraintStart_toStartOf="@id/cl_media"
        app:layout_goneMarginBottom="@dimen/spacing_lvl3"
        app:typographyType="heading_6"
        app:typographyWeight="bold"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_upcoming"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:textColor="@color/Yellow_Y300"
        app:layout_constraintBottom_toBottomOf="@id/cl_media"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:typographyType="small"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_live_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_live_badge"
        app:layout_constraintStart_toStartOf="@id/fl_border"
        app:layout_constraintEnd_toEndOf="@id/fl_border"
        app:layout_constraintBottom_toBottomOf="@id/fl_border"
        app:layout_constraintTop_toBottomOf="@id/fl_border"
        />

</androidx.constraintlayout.widget.ConstraintLayout>