<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/play_component_divider_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        tools:background="@color/Unify_Static_Black"/>
    <com.tokopedia.play.widget.ui.PlayWidgetView
        android:id="@+id/play_widget_view"
        tools:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/play_component_divider_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        tools:background="@color/Unify_B500"/>
</LinearLayout>