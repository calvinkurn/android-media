<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/play_widget_card_placeholder_width"
    android:layout_height="@dimen/play_widget_card_placeholder_height"
    >

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_image"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:loader_type="rect"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_play_widget_card_placeholder_detail"
        >

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_detail_1"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="line"
            />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_detail_2"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loader_detail_1"
            app:layout_constraintWidth_percent="0.65"
            app:loader_type="line"
            />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_detail_3"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loader_detail_2"
            app:layout_constraintWidth_percent="0.45"
            app:loader_type="line"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>