<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <com.tokopedia.home_component.customview.DynamicChannelHeaderView
        android:id="@+id/home_component_header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/play_widget_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_component_header_view"
        tools:background="@color/play_widget_dms_light_gray">

        <FrameLayout
            android:id="@+id/play_widget_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/play_widget_medium_overlay_negative"
            android:layout_marginRight="@dimen/play_widget_medium_overlay_negative"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/play_widget_overlay_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/play_widget_overlay_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/play_widget_medium_overlay"
                android:scaleType="fitStart" />

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/play_widget_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:paddingBottom="@dimen/home_margin_12_dp_product_card"
            android:paddingTop="@dimen/home_margin_12_dp_product_card"
            android:clipToPadding="false"
            android:paddingStart="@dimen/spacing_lvl4"
            android:paddingEnd="@dimen/spacing_lvl3"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_component_header_view"
            tools:itemCount="10"
            tools:listitem="@layout/item_play_widget_card_channel_medium"
            tools:orientation="horizontal"
            tools:spanCount="3" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>