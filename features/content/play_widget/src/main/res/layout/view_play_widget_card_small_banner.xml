<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/play_widget_small_width"
    android:layout_height="@dimen/play_widget_small_height"
    android:background="@color/Unify_Background"
    android:foreground="@drawable/fg_play_widget_card_small_banner"
    >

    <FrameLayout
        android:id="@+id/fl_border"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_play_widget_small_default_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_fallback"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:text="@string/play_widget_banner_fallback_text"
        android:textAlignment="center"
        android:textColor="@color/Unify_G500"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fl_border"
        app:layout_constraintEnd_toEndOf="@id/fl_border"
        app:layout_constraintStart_toStartOf="@id/fl_border"
        app:layout_constraintTop_toTopOf="@id/fl_border"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        />

    <com.tokopedia.play_common.view.RoundedImageView
        android:id="@+id/iv_banner"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/play_widget_dp_3"
        app:rImg_cornerRadius="@dimen/play_widget_small_radius"
        app:layout_constraintBottom_toBottomOf="@id/fl_border"
        app:layout_constraintEnd_toEndOf="@id/fl_border"
        app:layout_constraintStart_toStartOf="@id/fl_border"
        app:layout_constraintTop_toTopOf="@id/fl_border"
        />

</androidx.constraintlayout.widget.ConstraintLayout>