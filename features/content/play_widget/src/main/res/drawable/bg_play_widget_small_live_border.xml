<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/play_widget_small_radius" />
            <gradient
                android:startColor="@color/play_widget_small_border_gradient_top"
                android:endColor="@color/Red_R400"
                android:angle="-90"
                />
        </shape>
    </item>

    <item
        android:top="@dimen/play_widget_small_border_width"
        android:bottom="@dimen/play_widget_small_border_width"
        android:right="@dimen/play_widget_small_border_width"
        android:left="@dimen/play_widget_small_border_width"
        >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/play_widget_small_radius" />
            <solid android:color="@color/Neutral_N0" />
        </shape>
    </item>
</layer-list>