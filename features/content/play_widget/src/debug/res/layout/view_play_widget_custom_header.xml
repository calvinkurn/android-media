<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:visibility="visible"
    >

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_play_widget_title"
        style="@style/PlayWidgetHeader.DefaultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_16"
        app:layout_constraintBottom_toTopOf="@id/tv_play_widget_action"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Tonton keseruannya"
        tools:visibility="visible"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_play_widget_action"
        style="@style/PlayWidgetHeader.DefaultAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/unify_space_16"
        android:text="@string/lihat_semua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_play_widget_title"
        app:layout_constraintTop_toBottomOf="@id/tv_play_widget_title"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>