<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundedImageView">
        <attr name="rImg_cornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundedConstraintLayout">
        <attr name="rcl_cornerRadius" format="dimension" />
        <attr name="rcl_topLeftRadius" format="dimension" />
        <attr name="rcl_topRightRadius" format="dimension" />
        <attr name="rcl_bottomLeftRadius" format="dimension" />
        <attr name="rcl_bottomRightRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundedFrameLayout">
        <attr name="rfl_cornerRadius" format="dimension" />
        <attr name="rfl_topLeftRadius" format="dimension" />
        <attr name="rfl_topRightRadius" format="dimension" />
        <attr name="rfl_bottomLeftRadius" format="dimension" />
        <attr name="rfl_bottomRightRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundedLinearLayout">
        <attr name="rll_cornerRadius" format="dimension" />
        <attr name="rll_topLeftRadius" format="dimension" />
        <attr name="rll_topRightRadius" format="dimension" />
        <attr name="rll_bottomLeftRadius" format="dimension" />
        <attr name="rll_bottomRightRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RemoteImageView">
        <attr name="imageUrl" format="string"/>
        <attr name="cacheStrategy" format="enum">
            <enum name="none" value="0"/>
            <enum name="data" value="1"/>
            <enum name="resource" value="2"/>
        </attr>
    </declare-styleable>
</resources>