<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/play_view_stats_info_height"
    android:layout_marginStart="@dimen/spacing_lvl2"
    android:layout_marginLeft="@dimen/spacing_lvl2"
    android:background="@drawable/bg_play_stats_info_view_badge"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_total_view"
        android:layout_width="@dimen/spacing_lvl4"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="VISIBILITY"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_total_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_Static_White"
        app:typographyType="body_3"
        tools:text="2382"
        />

</LinearLayout>