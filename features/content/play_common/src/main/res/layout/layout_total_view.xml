<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/spacing_lvl2"
    android:layout_marginLeft="@dimen/spacing_lvl2"
    android:background="@drawable/bg_play_stats_info_view_badge">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_total_view"
        android:layout_width="@dimen/spacing_lvl4"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/play_view_stats_info_view_padding"
        android:layout_marginLeft="@dimen/play_view_stats_info_view_padding"
        android:layout_marginTop="@dimen/play_view_stats_info_view_padding"
        android:layout_marginBottom="@dimen/play_view_stats_info_view_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_play_eye_white"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_total_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/play_view_stats_info_view_padding"
        android:layout_marginRight="@dimen/play_view_stats_info_view_padding"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginBottom="@dimen/play_view_stats_info_view_padding"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintStart_toEndOf="@id/iv_total_view"
        app:layout_constraintTop_toTopOf="@id/iv_total_view"
        app:layout_constraintBottom_toBottomOf="@id/iv_total_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"
        tools:text="2382"
        />

</androidx.constraintlayout.widget.ConstraintLayout>