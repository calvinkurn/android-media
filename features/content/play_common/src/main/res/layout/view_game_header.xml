<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fl_play_game_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_lvl6"
        tools:background="@drawable/bg_play_quiz_header"
        android:padding="@dimen/spacing_lvl5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <EditText
            android:id="@+id/et_play_game_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/play_game_header_title_hint"
            android:imeOptions="actionNext"
            android:inputType="textCapWords|textMultiLine"
            android:textColor="@color/play_bro_quiz_header_title"
            android:textColorHint="@color/play_bro_quiz_header_title_hint"
            android:textSize="@dimen/fontSize_lvl6"
            android:textStyle="bold" />

    </FrameLayout>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_play_game_header_icon"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        android:background="@drawable/bg_play_game_circle"
        android:padding="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toTopOf="@id/fl_play_game_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/fl_play_game_header"
        />

</androidx.constraintlayout.widget.ConstraintLayout>