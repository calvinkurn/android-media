<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <View
        android:id="@+id/ph_leaderboard_title"
        style="@style/PlayPlaceholder"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="@id/ph_leaderboard_title"
        app:layout_constraintStart_toStartOf="@id/ph_leaderboard_title"
        app:layout_constraintTop_toBottomOf="@id/ph_leaderboard_title"
        tools:itemCount="5"
        tools:listitem="@layout/item_play_interactive_leaderboard_winner_placeholder"
        />

</androidx.constraintlayout.widget.ConstraintLayout>