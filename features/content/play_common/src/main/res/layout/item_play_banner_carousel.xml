<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productCardView"
    android:layout_width="@dimen/play_banner_item_carousel_width"
    android:layout_height="@dimen/play_banner_item_carousel_height"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginRight="@dimen/spacing_lvl2"
    android:layout_marginEnd="@dimen/spacing_lvl2"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/spacing_lvl1"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_300">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <FrameLayout
            android:id="@+id/container_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_play_reminder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>
        <include
            android:id="@+id/live_badge"
            layout="@layout/layout_live_badge"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/viewer_badge"
            layout="@layout/layout_viewer_badge"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/spacing_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:layout_constraintStart_toEndOf="@+id/live_badge"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/promo_badge"
            layout="@layout/layout_promo_badge"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/container_content" />

        <LinearLayout
            android:id="@+id/container_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/play_background_overlay_82"
            android:paddingTop="@dimen/spacing_lvl3"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/channel_up_coming_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/Yellow_Y500"
                android:textStyle="bold"
                android:visibility="visible"
                app:typographyType="small"
                tools:text="10 January 2020 - 17.00" />
            <TextView
                android:id="@+id/channel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/Neutral_N700_96"
                android:textIsSelectable="false"
                tools:text="Google Assistant" />

            <TextView
                android:id="@+id/channel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                android:layout_marginBottom="@dimen/spacing_lvl2"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/Neutral_N700_68"
                android:textIsSelectable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Google abcd asda sda sdaa" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>