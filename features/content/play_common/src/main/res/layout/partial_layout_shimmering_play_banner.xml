<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/title_shimmer"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toStartOf="@+id/see_more_shimmer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/see_more_shimmer"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_shimmer"
        app:layout_constraintTop_toTopOf="parent" />
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/background_banner_shimmer"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginTop="@dimen/spacing_lvl8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/first_item_play_banner"
        android:layout_width="@dimen/play_banner_item_carousel_width"
        android:layout_height="@dimen/play_banner_item_carousel_height"
        android:layout_marginStart="185dp"
        android:layout_marginLeft="185dp"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:layout_constraintTop_toTopOf="@+id/background_banner_shimmer"
        app:layout_constraintBottom_toBottomOf="@+id/background_banner_shimmer"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/first_image_shimmer_shimmer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/first_title_item_shimmer"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                app:corners="@integer/corner_radius_shimmering"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_image_shimmer_shimmer" />
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/first_desc_item_shimmer"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl5"
                android:layout_marginRight="@dimen/spacing_lvl5"
                app:corners="@integer/corner_radius_shimmering"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_title_item_shimmer" />
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/first_state_item_shimmer"
                android:layout_width="@dimen/layout_lvl7"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_marginBottom="@dimen/spacing_lvl5"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                app:corners="@integer/corner_radius_shimmering"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/second_item_play_banner"
        android:layout_width="@dimen/play_banner_item_carousel_width"
        android:layout_height="@dimen/play_banner_item_carousel_height"
        android:elevation="0dp"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:layout_constraintTop_toTopOf="@+id/background_banner_shimmer"
        app:layout_constraintBottom_toBottomOf="@+id/background_banner_shimmer"
        app:layout_constraintStart_toEndOf="@+id/first_item_play_banner">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/second_image_shimmer_shimmer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/second_title_item_shimmer"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                app:corners="@integer/corner_radius_shimmering"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/second_image_shimmer_shimmer" />
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/second_desc_item_shimmer"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl5"
                android:layout_marginRight="@dimen/spacing_lvl5"
                app:corners="@integer/corner_radius_shimmering"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/second_title_item_shimmer" />
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/second_state_item_shimmer"
                android:layout_width="@dimen/layout_lvl7"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_marginBottom="@dimen/spacing_lvl5"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl3"
                app:corners="@integer/corner_radius_shimmering"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>