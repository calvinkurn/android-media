<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_chat_scroll"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_play_chat_scroll_down"
        app:icon_name="CHEVRON_DOWN"
        app:icon_color_light_enable="@color/Unify_N400"
        app:icon_color_light_disabled="@color/Unify_N400"
        app:icon_color_night_enable="@color/Unify_N400"
        app:icon_color_night_disabled="@color/Unify_N400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/v_indicator_red"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_play_red_dots"
        app:layout_constraintEnd_toEndOf="@id/iv_chat_scroll"
        app:layout_constraintTop_toTopOf="@id/iv_chat_scroll" />

</merge>