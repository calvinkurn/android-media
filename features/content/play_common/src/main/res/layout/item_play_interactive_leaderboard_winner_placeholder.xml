<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/ph_play_leaderboard_number"
        style="@style/PlayPlaceholder"
        android:layout_width="@dimen/spacing_lvl3"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/ph_play_leaderboard_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ph_play_leaderboard_number"
        app:layout_constraintTop_toTopOf="parent">

        <View
            style="@style/PlayCirclePlaceholder"
            android:layout_width="@dimen/spacing_lvl6"
            android:layout_height="@dimen/spacing_lvl6"
            android:layout_margin="@dimen/spacing_lvl2" />

    </FrameLayout>

    <View
        android:id="@+id/ph_play_leaderboard_name"
        style="@style/PlayPlaceholder"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ph_play_leaderboard_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ph_play_leaderboard_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ph_play_leaderboard_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>