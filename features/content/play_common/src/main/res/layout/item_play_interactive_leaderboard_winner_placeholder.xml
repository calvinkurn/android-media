<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/spacing_lvl4"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4">

    <View
        android:id="@+id/ph_play_leaderboard_number"
        style="@style/PlayPlaceholder"
        android:layout_width="@dimen/spacing_lvl3"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/ph_play_leaderboard_avatar"
        style="@style/PlayPlaceholder"
        app:cardCornerRadius="@dimen/spacing_lvl8"
        android:layout_width="@dimen/spacing_lvl6"
        android:layout_height="@dimen/spacing_lvl6"
        android:layout_marginStart="@dimen/spacing_lvl5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ph_play_leaderboard_number"
        />

    <View
        android:id="@+id/ph_play_leaderboard_name"
        style="@style/PlayPlaceholder"
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ph_play_leaderboard_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>