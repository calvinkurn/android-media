<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.play_common.view.RoundedConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/play_dp_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rcl_cornerRadius="@dimen/play_interactive_common_radius"
    android:background="@drawable/bg_play_quiz_header">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_game_reward"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon_name="GIFT"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_light_disabled="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_color_night_disabled="@color/Unify_Static_White"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_game_reward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/play_dp_6"
        app:typographyType="heading_3"
        app:layout_constraintBottom_toBottomOf="@+id/iv_game_reward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_game_reward"
        app:layout_constraintTop_toTopOf="@+id/iv_game_reward"
        android:textColor="@color/Unify_Static_White"
        tools:text="Hadiah: Kacamata Kuda" />
</com.tokopedia.play_common.view.RoundedConstraintLayout>