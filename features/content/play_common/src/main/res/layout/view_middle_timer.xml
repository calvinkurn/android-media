<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="@dimen/spacing_lvl4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0">


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_engagement_timer_info"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/play_common_widget_interactive_end"
        android:textColor="@color/Unify_N700"
        android:visibility="visible"
        app:typographyType="small"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.timer.TimerUnifySingle
        android:id="@+id/timer_quiz_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:timer_unify_single_type="minute_digit"
        app:timer_unify_single_variant="main"
        tools:timer_unify_single_remainingMinutes="10" />


</LinearLayout>