<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_lvl5">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_leaderboard_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        tools:text="Giveaway Kotak Pensil" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="@id/tv_leaderboard_title"
        app:layout_constraintStart_toStartOf="@id/tv_leaderboard_title"
        app:layout_constraintTop_toBottomOf="@id/tv_leaderboard_title"
        tools:itemCount="5"
        tools:listitem="@layout/item_play_engagement_leaderboard_winner" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_leaderboard_other_participant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:textColor="@color/Unify_N700_68"
        android:textSize="@dimen/fontSize_lvl2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_leaderboard_title"
        app:layout_constraintStart_toStartOf="@id/tv_leaderboard_title"
        app:layout_constraintTop_toBottomOf="@id/rv_winner"
        app:typographyType="body_3"
        tools:text="Dari 100 peserta game"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_leaderboard_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:textColor="@color/Unify_N300"
        android:textSize="@dimen/fontSize_lvl2"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_leaderboard_title"
        app:layout_constraintStart_toStartOf="@id/tv_leaderboard_title"
        app:layout_constraintTop_toBottomOf="@id/tv_leaderboard_title"
        app:typographyType="body_3"
        android:text="@string/play_engage_empty"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>