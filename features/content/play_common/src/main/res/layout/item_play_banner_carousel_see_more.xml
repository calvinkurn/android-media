<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_see_more_banner_mix"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="@dimen/play_banner_item_carousel_width"
    android:layout_height="@dimen/play_banner_item_carousel_height"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:cardElevation="@dimen/spacing_lvl2"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_banner_mix_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_banner_mix_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/play_banner_carousel_see_all"
            android:textColor="@color/Green_G500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/banner_mix_arrow"
            app:layout_constraintStart_toStartOf="@+id/banner_mix_arrow"
            app:layout_constraintTop_toBottomOf="@+id/banner_mix_arrow"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="heading_6" />

        <ImageView
            android:id="@+id/banner_mix_arrow"
            android:layout_width="@dimen/spacing_lvl8"
            android:layout_height="@dimen/spacing_lvl8"
            app:srcCompat="@drawable/ic_play_banner_see_more"
            app:layout_constraintBottom_toTopOf="@+id/see_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>