<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/containerPlayGalleryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/play_dp_12"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/play_dp_12">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/album"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="body_2"
            tools:text="Album" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPlayGalleryAlbumLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Green_G500"
            app:typographyType="body_2"
            tools:text="Semua media" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlayGallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/Neutral_N0"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/spacing_lvl1"
        android:paddingRight="@dimen/spacing_lvl1"
        android:paddingBottom="@dimen/spacing_lvl2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlayAlbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/Neutral_N0"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/spacing_lvl1"
        android:paddingRight="@dimen/spacing_lvl1"
        android:paddingBottom="@dimen/spacing_lvl2" />

    <LinearLayout
        android:id="@+id/containerPlayLoading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Neutral_N0"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>