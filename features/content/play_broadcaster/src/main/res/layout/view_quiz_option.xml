<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_quiz_option"
    android:paddingStart="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl2"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl2">


    <FrameLayout
        android:id="@+id/fl_quiz_option"
        android:layout_width="@dimen/play_bro_quiz_option_choice_size"
        android:layout_height="@dimen/play_bro_quiz_option_choice_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_quiz_option_choice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_game_option_choice"
            android:gravity="center"
            android:textColor="@color/Unify_NN950"
            tools:text="A" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_quiz_option_optional"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:icon_color_light_enable="@color/Unify_NN300"
            app:icon_color_night_enable="@color/Unify_NN300"
            app:icon_name="ADD_CIRCLE" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_quiz_option_checked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:icon_color_light_enable="@color/Unify_NN0"
            app:icon_color_night_enable="@color/Unify_NN0"
            app:icon_name="CHECK_CIRCLE" />

    </FrameLayout>

    <EditText
        android:id="@+id/et_quiz_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:background="@null"
        android:imeOptions="actionNext"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/Unify_NN950"
        android:textColorHint="@color/Unify_NN400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fl_quiz_option"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>