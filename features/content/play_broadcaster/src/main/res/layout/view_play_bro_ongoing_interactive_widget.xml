<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical"
    tools:background="@color/green_1000">

    <com.tokopedia.play_common.view.game.GameSmallWidgetView
        android:id="@+id/view_game_ongoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.tokopedia.play_common.view.game.InteractiveFinishView
        android:id="@+id/view_game_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/play_dp_12"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.tokopedia.play_common.view.RoundedConstraintLayout
        android:id="@+id/view_game_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/play_dp_12"
        android:background="@drawable/bg_play_bro_pinned_msg_empty"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:rcl_cornerRadius="@dimen/interactive_icon_radius"
        tools:background="@color/Unify_Static_Black_32"
        tools:visibility="visible">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iconUnify"
            android:layout_width="@dimen/play_dp_18"
            android:layout_height="@dimen/play_dp_18"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/play_dp_6"
            android:layout_marginBottom="6dp"
            app:icon_color_light_enable="@color/Unify_Static_White"
            app:icon_color_night_enable="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:text="Hasil Game"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconUnify"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

    </com.tokopedia.play_common.view.RoundedConstraintLayout>


</LinearLayout>