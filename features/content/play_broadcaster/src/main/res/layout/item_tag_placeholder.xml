<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/ph_tag_recommendation_small"
        style="@style/PlayTagPlaceholder"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="@dimen/play_bro_tag_placeholder_height"
        android:visibility="gone" />

    <View
        android:id="@+id/ph_tag_recommendation_medium"
        style="@style/PlayTagPlaceholder"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="@dimen/play_bro_tag_placeholder_height"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/ph_tag_recommendation_large"
        style="@style/PlayTagPlaceholder"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="@dimen/play_bro_tag_placeholder_height"
        android:visibility="gone" />

</FrameLayout>