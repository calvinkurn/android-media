<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black"
    >

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_calendar"
        android:layout_width="@dimen/play_broadcast_schedule_icon_size"
        android:layout_height="@dimen/play_broadcast_schedule_icon_size"
        app:icon_color_light_enable="@color/Unify_N0"
        app:icon_name="CALENDAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_schedule_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/play_dp_12"
        android:text="@string/play_broadcast_schedule_add_info"
        android:textColor="@color/play_broadcast_schedule_info"
        app:layout_constraintBottom_toBottomOf="@id/icon_calendar"
        app:layout_constraintEnd_toStartOf="@id/icon_edit"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/icon_calendar"
        app:layout_constraintTop_toTopOf="@id/icon_calendar"
        android:ellipsize="end"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_edit"
        android:layout_width="@dimen/play_broadcast_schedule_icon_size"
        android:layout_height="@dimen/play_broadcast_schedule_icon_size"
        app:icon_color_light_enable="@color/Unify_N0"
        app:icon_name="EDIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>