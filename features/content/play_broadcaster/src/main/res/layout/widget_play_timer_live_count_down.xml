<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/play_dms_N700_68">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/Unify_Static_White"
        android:textSize="@dimen/play_timer_count_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_play_count_down_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl8"
        android:gravity="center"
        android:text="@string/play_camera_get_ready_label"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toTopOf="@id/btn_play_cancel_live_stream"
        app:layout_constraintEnd_toEndOf="@id/btn_play_cancel_live_stream"
        app:layout_constraintStart_toStartOf="@id/btn_play_cancel_live_stream"
        app:typographyType="body_1"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_play_cancel_live_stream"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:text="@string/play_cancel_live_stream"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:unifyButtonInvers="true"
        app:unifyButtonVariant="ghost" />

</androidx.constraintlayout.widget.ConstraintLayout>