<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_play_summary_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/Neutral_N700_68" />

    <LinearLayout
        android:id="@+id/layout_live_summary_meta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingLeft="@dimen/layout_lvl2"
        android:paddingTop="@dimen/play_dp_12"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingRight="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/play_dp_12"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_play_summary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:gravity="center"
            android:text="@string/play_summary_title"
            android:textColor="@color/Neutral_N0"
            app:typographyType="heading_4" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_play_summary_cover"
            android:layout_width="@dimen/play_summary_cover_width"
            android:layout_height="@dimen/play_summary_cover_height"
            android:layout_marginTop="@dimen/spacing_lvl4"
            tools:background="@color/Neutral_N0" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_play_summary_live_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/play_dp_12"
            android:gravity="center"
            android:textColor="@color/Neutral_N0"
            app:typographyType="heading_5"
            tools:text="Sneakers Hypebeast with Cashback 10%" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_play_summary_live_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:paddingStart="@dimen/spacing_lvl2"
            android:paddingLeft="@dimen/spacing_lvl2"
            android:paddingEnd="@dimen/spacing_lvl2"
            android:paddingRight="@dimen/spacing_lvl2"
            android:textColor="@color/Neutral_N0"
            app:typographyType="body_3"
            android:background="@drawable/bg_play_dark_gray_rounded_corner"
            tools:text="28:42"
            app:drawableLeftCompat="@drawable/ic_play_duration_white"
            android:drawablePadding="@dimen/spacing_lvl2"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_live_summary_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/play_dp_12"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_live_summary_meta"
        tools:background="@color/Neutral_N700_96">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_play_summary_live_information"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toTopOf="@id/btn_play_summary_finish"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_play_summary_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_summary_button_finish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:unifyButtonSize="large" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>