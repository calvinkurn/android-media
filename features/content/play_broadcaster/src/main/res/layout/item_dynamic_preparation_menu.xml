<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/Unify_Static_Black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="TEXT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:text="@string/play_bro_title_label"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="@id/ic_menu"
        app:layout_constraintStart_toEndOf="@id/ic_menu"
        app:layout_constraintTop_toTopOf="@id/ic_menu" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ic_menu_checked"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_play_bro_preparation_checked"
        app:layout_constraintEnd_toEndOf="@id/ic_menu"
        app:layout_constraintTop_toTopOf="@id/ic_menu"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>