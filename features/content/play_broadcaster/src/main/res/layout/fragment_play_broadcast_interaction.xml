<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Neutral_N700_68"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_time_counter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/play_counter_height"
        android:gravity="center"
        android:textColor="@color/Neutral_N0"
        android:textStyle="bold"
        app:typographyType="heading_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="24:59"/>

    <include
        layout="@layout/view_stats_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_counter" />

</androidx.constraintlayout.widget.ConstraintLayout>