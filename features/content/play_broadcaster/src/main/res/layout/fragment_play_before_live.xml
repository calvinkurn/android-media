<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/Neutral_N700_68"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_image_preview"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:background="@drawable/bg_play_cover"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/iv_share_link"
        app:layout_constraintDimensionRatio="H, 9:16"
        app:layout_constraintEnd_toStartOf="@id/gl_image_detail"
        app:layout_constraintStart_toStartOf="@id/btn_start_live"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_image_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"
        />

    <LinearLayout
        android:layout_width="@dimen/play_change_cover_before_live_width"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_choose_cover"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingTop="@dimen/play_dp_12"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image_preview"
        app:layout_constraintEnd_toEndOf="@+id/iv_image_preview"
        app:layout_constraintStart_toStartOf="@+id/iv_image_preview"
        app:layout_constraintTop_toTopOf="@+id/iv_image_preview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/play_dp_20"
            android:layout_height="@dimen/play_dp_18"
            android:scaleType="fitXY"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:srcCompat="@drawable/ic_play_action_camera_white"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_change_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/play_prepare_cover_title_change_cover_label"
            android:textColor="@color/play_white_96"
            app:typographyType="small"
            app:typographyWeight="bold"
            />

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:text="@string/play_cover_title_label"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintBottom_toTopOf="@id/tv_cover_title"
        app:layout_constraintEnd_toEndOf="@id/tv_cover_title"
        app:layout_constraintStart_toStartOf="@id/tv_cover_title"
        app:typographyType="body_3"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_cover_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintBottom_toTopOf="@id/v_separator"
        app:layout_constraintEnd_toEndOf="@id/v_separator"
        app:layout_constraintStart_toStartOf="@id/v_separator"
        app:typographyType="body_1"
        tools:text="Sneakers Hypebeast with Cashback 10%"
        />

    <View
        android:id="@+id/v_separator"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:background="@color/Neutral_N0"
        app:layout_constraintBottom_toTopOf="@id/ll_selected_product"
        app:layout_constraintEnd_toEndOf="@id/iv_share_link"
        app:layout_constraintStart_toStartOf="@id/ll_selected_product"
        />

    <LinearLayout
        android:id="@+id/ll_selected_product"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/follower_view"
        app:layout_constraintEnd_toEndOf="@id/follower_view"
        app:layout_constraintBottom_toTopOf="@id/follower_view"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_selected_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_6"
            tools:text="15 Produk Dipilih"
            android:textColor="@color/Neutral_N0"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_play_edit_white"
            android:layout_marginStart="@dimen/play_dp_14"
            android:layout_marginLeft="@dimen/play_dp_14"
            />

    </LinearLayout>
    
    <com.tokopedia.play.broadcaster.view.custom.PlayShareFollowerView
        android:id="@+id/follower_view"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/play_dp_34"
        android:layout_marginRight="@dimen/play_dp_34"
        app:layout_constraintBottom_toBottomOf="@id/iv_share_link"
        app:layout_constraintEnd_toStartOf="@id/iv_share_link"
        app:layout_constraintStart_toEndOf="@id/gl_image_detail"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_share_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_light_gray_circle"
        app:layout_constraintBottom_toTopOf="@id/btn_start_live"
        app:layout_constraintEnd_toEndOf="@id/btn_start_live"
        app:srcCompat="@drawable/ic_play_share_link_white"
        android:layout_marginBottom="@dimen/play_dp_28"
        />

    <com.tokopedia.play.broadcaster.view.custom.PlayStartStreamingButton
        android:id="@+id/btn_start_live"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/play_start_live_button_height"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/play_dp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <FrameLayout
        android:id="@+id/fl_edit"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>