<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/play_bro_product_tag_width"
    android:layout_height="@dimen/play_bro_product_tag_height"
    android:layout_margin="@dimen/spacing_lvl2"
    android:background="@drawable/bg_play_product_tag">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_bro_product_tag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toTopOf="@id/tv_bro_product_tag_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bro_product_tag_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl3"
        android:background="@drawable/bg_play_product_tag_stock"
        android:padding="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="@id/iv_bro_product_tag"
        app:layout_constraintStart_toStartOf="@id/iv_bro_product_tag"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Stok 450" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bro_product_tag_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="RP 999.999.999" />

</androidx.constraintlayout.widget.ConstraintLayout>