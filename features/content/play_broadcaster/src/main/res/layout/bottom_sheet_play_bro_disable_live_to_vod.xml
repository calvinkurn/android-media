<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/layout_disable_live_to_vod_content"
        layout="@layout/layout_play_bro_disable_live_to_vod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/play_ok"
        app:layout_constraintBottom_toTopOf="@id/tv_footer_disable_live_to_vod"
        app:layout_constraintTop_toBottomOf="@id/layout_disable_live_to_vod_content" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_footer_disable_live_to_vod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="Yuk, cari tahu info tentang perubahan fitur ini! Pelajari." />

</androidx.constraintlayout.widget.ConstraintLayout>