<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/play_bg_dark_transparent"
    android:visibility="gone"
    tools:visibility="visible"
    android:id="@+id/container_permission">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintRight_toLeftOf="@+id/space_icon"
        android:layout_marginBottom="@dimen/play_space_icon_camera"
        app:srcCompat="@drawable/ic_play_camera_white" />

    <View
        android:id="@+id/space_icon"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_play_audio_white"
        android:layout_marginBottom="@dimen/play_space_icon_audio"
        app:layout_constraintLeft_toRightOf="@+id/space_icon"
        app:layout_constraintBottom_toTopOf="@+id/title"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:gravity="center"
        android:text="@string/play_allow_title"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/description"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        android:gravity="center"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/play_allow_description" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_check_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl5"
        android:layout_marginEnd="@dimen/spacing_lvl5"
        app:layout_constraintTop_toTopOf="@+id/text_allow_camera"
        app:layout_constraintEnd_toStartOf="@+id/text_allow_camera"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_play_checkbox_checked" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_allow_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSize_lvl3"
        android:textColor="@color/Green_G500"
        android:gravity="center"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:textColor="@color/play_granted_permission"
        android:text="@string/play_allow_camera" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_check_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl5"
        android:layout_marginEnd="@dimen/spacing_lvl5"
        app:layout_constraintTop_toTopOf="@+id/text_allow_mic"
        app:layout_constraintEnd_toStartOf="@+id/text_allow_mic"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_play_checkbox_checked" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_allow_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSize_lvl3"
        android:textColor="@color/Green_G500"
        android:gravity="center"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_allow_camera"
        android:text="@string/play_allow_mic" />

</androidx.constraintlayout.widget.ConstraintLayout>