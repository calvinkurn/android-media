<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/play_bg_dark_transparent"
    android:visibility="gone"
    android:id="@+id/container_permission">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:gravity="center"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyWeight="bold"
        android:text="@string/play_allow_title"  />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/description"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        android:gravity="center"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/play_allow_description" />


    <TextView
        android:id="@+id/text_allow_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSize_lvl3"
        android:textColor="@color/Green_G500"
        android:gravity="center"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        tools:textColor="@color/play_granted_permission"
        android:text="@string/play_allow_camera" />

    <TextView
        android:id="@+id/text_allow_mic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontSize_lvl3"
        android:textColor="@color/Green_G500"
        android:gravity="center"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_allow_camera"
        android:text="@string/play_allow_mic" />

</androidx.constraintlayout.widget.ConstraintLayout>