<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_time_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_play_dark_gray_rounded_corner"
        android:paddingStart="@dimen/play_dp_12"
        android:paddingTop="@dimen/play_dp_6"
        android:paddingEnd="@dimen/play_dp_12"
        android:paddingBottom="@dimen/play_dp_6"
        android:text="@string/play_live_broadcast_time_default"
        android:textColor="@color/Unify_Static_White"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_time_counter_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_play_red_rounded_corner"
        android:drawablePadding="@dimen/spacing_lvl2"
        android:paddingStart="@dimen/play_dp_12"
        android:paddingTop="@dimen/play_dp_6"
        android:paddingEnd="@dimen/play_dp_12"
        android:paddingBottom="@dimen/play_dp_6"
        android:textColor="@color/Unify_Static_White"
        android:textSize="@dimen/fontSize_lvl1"
        android:visibility="invisible"
        app:drawableLeftCompat="@drawable/ic_play_clock_white"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        tools:text="05:00"
        tools:visibility="visible"
        />

</FrameLayout>