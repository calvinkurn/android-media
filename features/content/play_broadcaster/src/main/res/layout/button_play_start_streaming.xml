<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/play_start_live_button_height"
    android:background="@drawable/bg_play_start_live_button"
    android:elevation="@dimen/play_start_live_button_elevation"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingBottom="@dimen/spacing_lvl3"
    tools:layout_height="48dp"
    >

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_start_streaming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_start_streaming"
        android:textColor="@color/Unify_Static_White"
        app:typographyType="heading_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_streaming_duration_info"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_streaming_duration_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_start_streaming"
        app:typographyType="small"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_stale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_start_streaming, tv_streaming_duration_info"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_streaming"
        android:layout_width="@dimen/play_unify_loading_size"
        android:layout_height="@dimen/play_unify_loading_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circular_white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>