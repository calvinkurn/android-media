<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/play_dms_N700_80">

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        android:text="@string/play_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unifyButtonInvers="true"
        app:unifyButtonVariant="ghost" />

    <include
        android:id="@+id/cl_interactive_setup"
        layout="@layout/view_play_interactive_setup"
        android:layout_width="@dimen/play_interactive_setup_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/play_interactive_setup_top_margin"
        app:layout_constraintEnd_toEndOf="@id/tv_setup_desc"
        app:layout_constraintStart_toStartOf="@id/tv_setup_desc"
        app:layout_constraintTop_toBottomOf="@id/btn_cancel" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_setup_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:gravity="center"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintEnd_toEndOf="@id/tv_setup_desc"
        app:layout_constraintStart_toStartOf="@id/tv_setup_desc"
        app:layout_constraintTop_toBottomOf="@id/cl_interactive_setup"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Mau kasih hadiah apa?" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_setup_desc"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl5"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl5"
        android:gravity="center"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_setup_title"
        app:typographyType="body_3"
        tools:text="Contoh: Giveaway Sepatu, Tas Rp50 rb, Diskon 90%, Kupon Ongkir, HP Gratis, dll." />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/layout_play_interactive_time_picker" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>