<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerPlayPrepareBroadcastRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/svPlayPrepareBroadcastPromo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvPlayPrepareBroadcastPromoHeaderDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/play_prepare_broadcast_promo_header_description"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPlayPrepareBroadcastPromoIcon"
                android:layout_width="@dimen/play_prepare_broadcast_promo_image_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl5"
                android:adjustViewBounds="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPlayPrepareBroadcastPromoHeaderDescription" />

            <!-- Main State View -->
            <androidx.cardview.widget.CardView
                android:id="@+id/containerPlayPrepareBroadcastWithPromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:cardCornerRadius="@dimen/spacing_lvl3"
                app:cardElevation="@dimen/spacing_lvl1"
                app:cardUseCompatPadding="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivPlayPrepareBroadcastPromoIcon">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/containerConstraintPlayWithPromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Unify_Static_White"
                    android:padding="@dimen/spacing_lvl4">

                    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
                        android:id="@+id/radioPlayPrepareBroadcastWithPromo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tvPlayPrepareBroadcastWithPromoTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_lvl4"
                        android:layout_marginEnd="@dimen/spacing_lvl4"
                        android:text="@string/play_prepare_broadcast_promo_with_promo_title"
                        android:textColor="@color/Unify_N700_96"
                        app:layout_constraintLeft_toRightOf="@+id/radioPlayPrepareBroadcastWithPromo"
                        app:layout_constraintRight_toLeftOf="@+id/ivPlayPrepareBroadcastWithPromoEdit"
                        app:layout_constraintTop_toTopOf="parent"
                        app:typographyType="heading_6" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tvPlayPrepareBroadcastWithPromoDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_lvl1"
                        android:text="@string/play_prepare_broadcast_promo_with_promo_description"
                        android:textColor="@color/Unify_N700_68"
                        app:layout_constraintLeft_toLeftOf="@+id/tvPlayPrepareBroadcastWithPromoTitle"
                        app:layout_constraintRight_toRightOf="@+id/tvPlayPrepareBroadcastWithPromoTitle"
                        app:layout_constraintTop_toBottomOf="@+id/tvPlayPrepareBroadcastWithPromoTitle"
                        app:typographyType="small" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivPlayPrepareBroadcastWithPromoEdit"
                        android:layout_width="@dimen/layout_lvl3"
                        android:layout_height="@dimen/layout_lvl3"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_play_broadcast_edit"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/containerPlayPrepareBroadcastWithoutPromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl2"
                app:cardCornerRadius="@dimen/spacing_lvl3"
                app:cardElevation="@dimen/spacing_lvl1"
                app:cardUseCompatPadding="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/containerPlayPrepareBroadcastWithPromo">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Unify_Static_White"
                    android:padding="@dimen/spacing_lvl4">

                    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
                        android:id="@+id/radioPlayPrepareBroadcastWithoutPromo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tvPlayPrepareBroadcastWithoutPromoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_lvl4"
                        android:text="@string/play_prepare_broadcast_promo_without_promo_title"
                        android:textColor="@color/Unify_N700_96"
                        app:layout_constraintLeft_toRightOf="@+id/radioPlayPrepareBroadcastWithoutPromo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:typographyType="heading_6" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tvPlayPrepareBroadcastWithoutPromoDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_lvl1"
                        android:text="@string/play_prepare_broadcast_promo_without_promo_description"
                        android:textColor="@color/Unify_N700_68"
                        app:layout_constraintLeft_toLeftOf="@+id/tvPlayPrepareBroadcastWithoutPromoTitle"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPlayPrepareBroadcastWithoutPromoTitle"
                        app:typographyType="small" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Percetage and Quota State View -->
            <androidx.cardview.widget.CardView
                android:id="@+id/containerPlayPrepareBroadcastPercetageAndDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/spacing_lvl3"
                app:cardElevation="@dimen/spacing_lvl1"
                app:cardUseCompatPadding="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivPlayPrepareBroadcastPromoIcon"
                tools:visibility="gone">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Unify_Static_White"
                    android:padding="@dimen/spacing_lvl4">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivPlayPrepareBroadcastInput"
                        android:layout_width="@dimen/layout_lvl4"
                        android:layout_height="@dimen/layout_lvl4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_play_broadcast_promo_image" />

                    <com.tokopedia.unifycomponents.TextFieldUnify
                        android:id="@+id/tvPlayPrepareBroadcastInputField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_lvl4"
                        android:layout_marginEnd="@dimen/spacing_lvl4"
                        android:text="@string/play_prepare_broadcast_promo_with_promo_description"
                        android:textColor="@color/Unify_N700_68"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ivPlayPrepareBroadcastInput"
                        app:layout_constraintRight_toLeftOf="@+id/btnPlayPrepareBroadcasatInputButton"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:text_field_input_type="number|numberSigned"
                        app:text_field_label="@string/play_prepare_broadcast_promo_percentage_label"
                        app:text_field_label_static="true" />

                    <com.tokopedia.unifycomponents.UnifyButton
                        android:id="@+id/btnPlayPrepareBroadcasatInputButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/play_label_save"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:unifyButtonSize="medium" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/containerPlayPrepareBroadcastBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_lvl3"
        app:elevation="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl1"
            android:background="@color/play_dms_bg_shadow" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnPlayPrepareBroadcastNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:enabled="false"
            android:text="@string/play_next" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>