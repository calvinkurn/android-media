<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3">

        <View
            style="@style/PlayCirclePlaceholder"
            android:layout_width="@dimen/spacing_lvl6"
            android:layout_height="@dimen/spacing_lvl6"
            android:layout_margin="@dimen/spacing_lvl2" />

    </FrameLayout>

    <View
        style="@style/PlayPlaceholder"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl6" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3">

        <View
            style="@style/PlayCirclePlaceholder"
            android:layout_width="@dimen/spacing_lvl6"
            android:layout_height="@dimen/spacing_lvl6"
            android:layout_margin="@dimen/spacing_lvl2" />

    </FrameLayout>

    <View
        style="@style/PlayPlaceholder"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="@dimen/spacing_lvl4"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl6" />

</LinearLayout>