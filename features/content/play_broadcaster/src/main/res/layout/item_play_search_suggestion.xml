<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_lvl6"
    android:paddingStart="@dimen/spacing_lvl2"
    android:paddingEnd="@dimen/spacing_lvl2"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_search_indicator"
        android:layout_width="@dimen/play_dp_18"
        android:layout_height="@dimen/play_dp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_search_light_grey"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_suggestion"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/play_dp_10"
        android:layout_marginLeft="@dimen/play_dp_10"
        android:layout_marginEnd="@dimen/play_dp_55"
        android:layout_marginRight="@dimen/play_dp_55"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_choose_suggestion"
        app:layout_constraintStart_toEndOf="@id/iv_search_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        tools:text="Air Jordan"
        />
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_choose_suggestion"
        android:layout_width="@dimen/play_dp_10"
        android:layout_height="@dimen/play_dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_arrow_top_left"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>