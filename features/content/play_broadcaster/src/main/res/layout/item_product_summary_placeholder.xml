<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <View
        android:id="@+id/ph_product_section_name"
        style="@style/PlayPlaceholderLight"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="@dimen/play_product_tag_summary_height_placeholder"
        android:layout_marginStart="@dimen/spacing_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/ph_product_section_status"
        style="@style/PlayPlaceholderLight"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="@dimen/play_product_tag_summary_height_placeholder"
        android:layout_marginEnd="@dimen/spacing_lvl1"
        app:layout_constraintBottom_toBottomOf="@id/ph_product_section_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ph_product_section_name"
        />

    <View
        android:id="@+id/ph_product_section_card_1"
        style="@style/PlayPlaceholderLight"
        android:layout_width="0dp"
        android:layout_height="@dimen/play_product_tag_summary_card_height_placeholder"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:layout_constraintTop_toBottomOf="@id/ph_product_section_name"
        app:layout_constraintStart_toStartOf="@id/ph_product_section_name"
        app:layout_constraintEnd_toEndOf="@id/ph_product_section_status"
        />

    <View
        android:id="@+id/ph_product_section_card_2"
        style="@style/PlayPlaceholderLight"
        android:layout_width="0dp"
        android:layout_height="@dimen/play_product_tag_summary_card_height_placeholder"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        app:layout_constraintTop_toBottomOf="@id/ph_product_section_card_1"
        app:layout_constraintStart_toStartOf="@id/ph_product_section_name"
        app:layout_constraintEnd_toEndOf="@id/ph_product_section_status"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>