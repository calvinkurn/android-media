<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/play_stats_info_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/live_badge"
        layout="@layout/layout_live_badge"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/play_stats_info_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/total_view_badge"
        layout="@layout/layout_total_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/play_stats_info_height"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="@id/live_badge"
        app:layout_constraintStart_toEndOf="@id/live_badge"
        app:layout_constraintTop_toTopOf="@id/live_badge"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/play_stats_info_height"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:background="@drawable/bg_play_stats_info_view_badge"
        app:layout_constraintBottom_toBottomOf="@id/total_view_badge"
        app:layout_constraintStart_toEndOf="@id/total_view_badge"
        app:layout_constraintTop_toTopOf="@id/total_view_badge">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_total_like"
            android:layout_width="@dimen/spacing_lvl4"
            android:layout_height="@dimen/spacing_lvl4"
            android:layout_marginStart="@dimen/play_view_stats_info_view_padding"
            android:layout_marginLeft="@dimen/play_view_stats_info_view_padding"
            android:layout_marginTop="@dimen/play_view_stats_info_view_padding"
            android:layout_marginBottom="@dimen/play_view_stats_info_view_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_play_like_white"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_total_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/play_view_stats_info_view_padding"
            android:layout_marginRight="@dimen/play_view_stats_info_view_padding"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/play_view_stats_info_view_padding"
            android:textColor="@color/Neutral_N0"
            app:layout_constraintStart_toEndOf="@id/iv_total_like"
            app:layout_constraintTop_toTopOf="@id/iv_total_like"
            app:layout_constraintBottom_toBottomOf="@id/iv_total_like"
            app:layout_constraintEnd_toEndOf="parent"
            app:typographyType="body_3"
            tools:text="320"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>