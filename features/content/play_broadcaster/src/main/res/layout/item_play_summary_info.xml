<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl3">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_item_play_summary_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_play_new_follower_white"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_item_play_summary_description"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_gravity="center_vertical"
        android:textColor="@color/Unify_Static_White"
        app:typographyType="body_3"
        tools:text="Penonton" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_item_play_summary_count_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_Static_White"
        app:typographyType="heading_4"
        tools:text="123" />

</LinearLayout>