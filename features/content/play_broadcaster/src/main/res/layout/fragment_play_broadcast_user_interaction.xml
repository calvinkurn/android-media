<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_lvl4">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_time_counter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/play_stats_info_counter_height"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:gravity="center"
        android:text="@string/play_live_broadcast_time_default"
        android:textColor="@color/Neutral_N0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time_counter_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:background="@drawable/bg_play_red_rounded_corner"
        android:drawablePadding="@dimen/spacing_lvl1"
        android:gravity="center"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl1"
        android:textStyle="bold"
        android:visibility="invisible"
        app:drawableLeftCompat="@drawable/ic_play_clock_white"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_time_counter" />

    <include
        layout="@layout/view_stats_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_counter"
        />

    <include
        layout="@layout/layout_chat_list"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/play_seller_chat_max_height"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toTopOf="@id/iv_product_tag"
        app:layout_constraintEnd_toStartOf="@id/iv_share_link"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_product_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_light_gray_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_play_inventory_disabled" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_share_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_light_gray_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_play_share_link_white" />

</androidx.constraintlayout.widget.ConstraintLayout>