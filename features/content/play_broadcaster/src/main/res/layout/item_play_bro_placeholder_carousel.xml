<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/play_product_tag_width"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_play_product_tag">

    <View
        android:id="@+id/ph_product_tag"
        style="@style/PlayPlaceholderLight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/play_product_tag_image_height"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ph_product_tag_price"
        style="@style/PlayPlaceholderLight"
        android:layout_width="0dp"
        android:layout_height="@dimen/play_product_tag_text_height_placeholder"
        android:layout_margin="@dimen/spacing_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ph_product_tag"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="RP 999.999.999" />

    <View
        android:id="@+id/ph_product_tag_normal_price"
        style="@style/PlayPlaceholderLight"
        android:layout_width="0dp"
        android:layout_height="@dimen/play_product_tag_text_height_placeholder"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:textColor="@color/Unify_NN950_44"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ph_product_tag_price"
        app:layout_constraintStart_toStartOf="@id/ph_product_tag_price"
        app:layout_constraintTop_toBottomOf="@id/ph_product_tag_price"
        app:typographyType="body_2"
        tools:text="RP 999.999.999" />

</androidx.constraintlayout.widget.ConstraintLayout>