<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cl_selected_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/play_bottom_action_view_height"
        android:background="@drawable/bottomsheet_background"
        android:focusable="true"
        android:clickable="true"
        app:behavior_hideable="true"
        app:behavior_skipCollapsed="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        >

        <View
            android:id="@+id/v_drag_indicator"
            android:layout_width="@dimen/play_drag_indicator_width"
            android:layout_height="@dimen/play_drag_indicator_height"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:background="@drawable/bg_play_drag_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/v_drag_area"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_selected_product_title"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_selected_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/play_dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_drag_indicator"
            app:typographyType="heading_3"
            tools:text="@string/play_selected_products"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_selected_product"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            android:layout_marginTop="@dimen/play_dp_12"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_selected_product_title"
            app:spanCount="2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>