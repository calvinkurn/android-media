<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_play_bottom_sheet"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_selected_product"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toTopOf="@id/ll_btn_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <View
            android:id="@+id/v_drag_indicator"
            android:layout_width="@dimen/play_drag_indicator_width"
            android:layout_height="@dimen/play_drag_indicator_height"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:background="@drawable/bg_play_drag_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/v_drag_area"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_selected_product_title"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_selected_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/play_dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_drag_indicator"
            app:typographyType="heading_3"
            tools:text="@string/play_selected_products"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_choose_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_choose_over"
            android:textColor="@color/light_G500"
            app:layout_constraintBottom_toBottomOf="@id/tv_selected_product_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_selected_product_title"
            app:typographyType="body_2"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_selected_product"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            android:layout_marginTop="@dimen/play_dp_12"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_selected_product_title"
            app:spanCount="2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_btn_container"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:elevation="@dimen/play_bottom_action_elevation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:enabled="false"
            android:text="@string/play_label_save"
            app:unifyButtonSize="medium"
            />

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_edit"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:elevation="@dimen/play_bottom_action_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>