<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/Neutral_N700_68"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_share_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:text="@string/play_auto_share_title"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintEnd_toStartOf="@id/btn_setup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_setup"
        app:typographyType="body_3"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_followers"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/btn_setup"
        app:layout_constraintStart_toStartOf="@id/tv_share_title"
        app:layout_constraintTop_toBottomOf="@id/tv_share_title"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_followers_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:text="@string/play_your_followers"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/rv_followers"
        app:layout_constraintEnd_toEndOf="@id/tv_share_title"
        app:layout_constraintStart_toEndOf="@id/rv_followers"
        app:layout_constraintTop_toTopOf="@id/rv_followers"
        app:typographyType="small"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/play_dp_18"
        android:text="@string/play_begin_setup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonSize="large"
        />

</androidx.constraintlayout.widget.ConstraintLayout>