<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/play_dms_N700_68">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/play_loader_container_margin"
        android:background="@drawable/bg_play_container_loader"
        android:padding="@dimen/spacing_lvl4">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader"
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/loader_title"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:text="@string/play_loader_connecting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/loader"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:text="@string/play_loader_live_paused"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/loader_title"
            app:layout_constraintTop_toBottomOf="@id/loader_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>