<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.tokopedia.play.broadcaster.view.custom.PlaySearchBar
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:search_bar_show_icon="false"
        />
    
    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chips_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/play_dp_12"
        app:chipSize="small"
        app:chipText="@string/play_bro_etalase_sort"
        app:chipType="normal"
        app:layout_constraintStart_toStartOf="@id/search_bar"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chips_etalase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        app:chipSize="small"
        app:chipText="@string/play_bro_etalase"
        app:layout_constraintBottom_toBottomOf="@id/chips_sort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/chips_sort"
        app:layout_constraintTop_toTopOf="@id/chips_sort"
        app:layout_constraintWidth_default="wrap"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/search_bar"
        app:layout_constraintTop_toBottomOf="@id/chips_etalase"
        />

</androidx.constraintlayout.widget.ConstraintLayout>