<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.tokopedia.play.broadcaster.view.custom.PlaySearchBar
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:search_bar_show_icon="false"
        />

    <LinearLayout
        android:id="@+id/container_chips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/play_dp_12"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/chips_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            app:chipSize="small"
            app:chipText="@string/play_bro_etalase_sort"
            app:chipType="normal"
            />

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/chips_etalase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSize="small"
            app:chipText="@string/play_bro_etalase"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/search_bar"
        app:layout_constraintTop_toBottomOf="@id/container_chips"
        />

</androidx.constraintlayout.widget.ConstraintLayout>