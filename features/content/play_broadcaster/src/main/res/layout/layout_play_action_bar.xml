<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_switch"
        android:layout_width="@dimen/play_camera_icon_width"
        android:layout_height="@dimen/play_camera_icon_height"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_close"
        app:srcCompat="@drawable/ic_play_switch_camera_white" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl6"
        android:layout_marginRight="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:gravity="center"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintEnd_toStartOf="@+id/tv_close"
        app:layout_constraintStart_toEndOf="@+id/iv_switch"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="@string/play_action_bar_prepare_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_close"
        android:minWidth="@dimen/layout_lvl3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:textColor="@color/Neutral_N0"
        android:textStyle="bold"
        app:drawableRightCompat="@drawable/ic_system_close_default"
        app:drawableTint="@color/Neutral_N0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>