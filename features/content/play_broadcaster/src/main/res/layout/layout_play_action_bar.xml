<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_switch"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_play_switch_camera_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl6"
        android:gravity="center"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintEnd_toStartOf="@+id/iv_close"
        app:layout_constraintStart_toEndOf="@+id/iv_switch"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="@string/play_action_bar_prepare_title"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_close"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:adjustViewBounds="true"
        android:src="@drawable/iconunify_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_switch"
        app:layout_constraintBottom_toBottomOf="@id/iv_switch"
        tools:visibility="visible"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:background="@drawable/bg_play_grid_border"
        android:padding="@dimen/spacing_lvl3"
        android:textColor="@color/Unify_Static_White"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_switch"
        app:typographyType="heading_6"
        tools:text="Akhiri"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>