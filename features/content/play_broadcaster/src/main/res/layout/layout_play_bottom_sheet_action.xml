<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Neutral_N0"
    android:elevation="@dimen/play_bottom_action_elevation"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/play_dp_18"
        android:layout_marginLeft="@dimen/play_dp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_inventory_disabled"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_badge_count"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:background="@drawable/bg_play_selected_product_badge"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_lvl1"
        android:paddingTop="@dimen/spacing_lvl1"
        android:paddingEnd="@dimen/spacing_lvl1"
        android:paddingBottom="@dimen/spacing_lvl1"
        android:textColor="@color/Neutral_N0"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/iv_inventory"
        app:layout_constraintEnd_toEndOf="@id/iv_inventory"
        app:layout_constraintStart_toEndOf="@id/iv_inventory"
        app:layout_constraintTop_toTopOf="@id/iv_inventory"
        app:typographyType="small"
        app:typographyWeight="bold"
        tools:text="10"
        tools:visibility="visible"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_action"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/play_dp_26"
        android:layout_marginLeft="@dimen/play_dp_26"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:enabled="false"
        android:text="@string/play_next"
        android:transitionName="@string/transition_next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_inventory"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="@dimen/spacing_lvl4"
        app:layout_goneMarginStart="@dimen/spacing_lvl4"
        app:unifyButtonSize="medium"
        />

</androidx.constraintlayout.widget.ConstraintLayout>