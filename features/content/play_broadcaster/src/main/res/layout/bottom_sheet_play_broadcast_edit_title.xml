<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:text="@string/play_broadcast_edit_title_title"
            android:textColor="@color/Unify_N700_44"
            app:typographyType="body_3" />

        <com.tokopedia.play.broadcaster.view.custom.PlayBroadcastEditText
            android:id="@+id/et_cover_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:hint="@string/play_prepare_cover_title_default_title_placeholder"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:textColor="@color/Unify_N700_96" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:textColor="@color/Unify_N700_44"
            app:typographyType="body_3"
            tools:text="31/38" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:background="@color/play_dms_bg_shadow"
            app:layout_constraintBottom_toTopOf="@+id/ll_crop_action"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/ll_container_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingRight="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/play_button_medium_height"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginBottom="@dimen/spacing_lvl3"
                android:text="@string/play_label_save"
                app:unifyButtonSize="medium"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>