<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:card_type="shadow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/spacing_lvl3">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iv_product_summary_image"
            android:layout_width="@dimen/layout_lvl8"
            android:layout_height="@dimen/layout_lvl8"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iv_product_summary_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_summary_image"
            app:layout_constraintEnd_toEndOf="@id/iv_product_summary_image"
            app:layout_constraintStart_toStartOf="@id/iv_product_summary_image"
            app:layout_constraintTop_toTopOf="@id/iv_product_summary_image"
            app:srcCompat="@drawable/bg_play_product_tag_empty_stock"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_summary_empty_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_lvl2"
            android:background="@drawable/bg_play_product_tag_stock"
            android:padding="@dimen/spacing_lvl2"
            android:text="@string/play_bro_product_tag_stock_empty"
            android:textColor="@color/Unify_Static_White"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_summary_cover"
            app:layout_constraintStart_toStartOf="@id/iv_product_summary_cover"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="Stok Habis"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_summary_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_product_summary_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_pinned_product_carousel_info"
            app:layout_goneMarginTop="0dp"
            app:typographyType="body_3"
            tools:text="2 Lines Product Name on List View on SRP 2 Lines Product Name on List View on SRP 2 Lines Product Name on List View on SRP" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_summary_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintStart_toStartOf="@id/tv_product_summary_name"
            app:layout_constraintTop_toBottomOf="@id/tv_product_summary_name"
            app:typographyType="body_1"
            app:typographyWeight="bold"
            tools:text="Rp 370.000" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_product_summary_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            app:labelType="general_light_red"
            app:layout_constraintBottom_toBottomOf="@+id/tv_product_summary_price"
            app:layout_constraintStart_toEndOf="@+id/tv_product_summary_price"
            app:layout_constraintTop_toTopOf="@+id/tv_product_summary_price"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:ignore="TextContrastCheck,TextContrastCheck"
            tools:text="57%" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_summary_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl1"
            android:textColor="@color/Unify_N700_32"
            app:layout_constraintBottom_toBottomOf="@+id/label_product_summary_discount"
            app:layout_constraintStart_toEndOf="@+id/label_product_summary_discount"
            app:layout_constraintTop_toTopOf="@+id/label_product_summary_discount"
            app:layout_constraintVertical_bias="1.0"
            app:typographyType="small"
            tools:ignore="TextContrastCheck"
            tools:text="Rp349.000" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_product_summary_delete"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            app:icon_name="DELETE"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_product_summary_name"
            app:layout_constraintTop_toBottomOf="@id/tv_product_summary_price" />

        <com.tokopedia.play.broadcaster.view.custom.PlayBroPinnedView
            android:id="@+id/view_pin_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            app:layout_constraintBottom_toBottomOf="@+id/iv_product_summary_image"
            app:layout_constraintEnd_toEndOf="@+id/iv_product_summary_image" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_pinned_product_carousel_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:maxLines="1"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/iv_pinned_product_carousel_info"
            app:layout_constraintTop_toTopOf="@id/iv_pinned_product_carousel_info"
            app:layout_goneMarginStart="@dimen/spacing_lvl4"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="@string/play_bro_pinned_product_info"
            tools:textColor="@color/Unify_G500"
            tools:visibility="gone" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iv_pinned_product_carousel_info"
            android:layout_width="@dimen/play_dp_12"
            android:layout_height="@dimen/play_dp_12"
            android:layout_marginStart="@dimen/spacing_lvl4"
            app:icon_color_light_disabled="@color/Unify_Y500"
            app:icon_color_light_enable="@color/Unify_G500"
            app:icon_color_night_disabled="@color/Unify_P500"
            app:icon_color_night_enable="@color/Unify_B500"
            app:icon_name="PUSH_PIN_FILLED"
            app:layout_constraintStart_toEndOf="@id/iv_product_summary_image"
            app:layout_constraintTop_toTopOf="@id/iv_product_summary_image"
            tools:visibility="gone" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/tv_summary_product_tag_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_4"
            android:layout_marginTop="@dimen/unify_space_4"
            app:layout_constraintStart_toStartOf="@+id/iv_product_summary_image"
            app:layout_constraintTop_toTopOf="@+id/iv_product_summary_image"
            tools:labelTitle="1"
            android:visibility="gone"
            tools:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>