<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/play_start_live_button_height"
    android:background="@drawable/bg_play_start_live_button"
    android:elevation="@dimen/play_start_live_button_elevation"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingBottom="@dimen/spacing_lvl3"
    tools:layout_height="48dp"
    >

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_start_streaming"
        android:textColor="@color/Neutral_N0"
        app:typographyType="heading_5"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_max_live_stream_duration"
        android:textColor="@color/Neutral_N0"
        app:typographyType="small"
        />

</LinearLayout>