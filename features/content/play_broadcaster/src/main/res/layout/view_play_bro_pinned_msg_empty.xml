<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_play_bro_pinned_msg_empty"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/Unify_Static_Black_32"
    >

    <com.tokopedia.iconunify.IconUnify
        android:layout_width="@dimen/play_dp_12"
        android:layout_height="@dimen/play_dp_12"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/play_dp_6"
        android:layout_marginBottom="@dimen/play_dp_6"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="PUSH_PIN"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/play_dp_6"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:text="@string/play_bro_create_pinned_msg"
        android:textColor="@color/Unify_Static_White"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        />

</LinearLayout>