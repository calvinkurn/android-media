<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/fl_image"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:background="@drawable/bg_play_grid_border"
        android:padding="@dimen/play_dp_1"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.tokopedia.play.broadcaster.view.custom.RoundedImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:cornerRadius="@dimen/play_product_preview_radius"
            />

    </FrameLayout>

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cb_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/play_dp_12"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@id/fl_image"
        app:layout_constraintTop_toTopOf="@id/fl_image"
        app:unify_checkbox_type="type_white"
        />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/lbl_empty_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:visibility="gone"
        android:text="@string/play_empty_stock"
        app:layout_constraintBottom_toBottomOf="@id/fl_image"
        app:layout_constraintStart_toStartOf="@id/fl_image"
        tools:visibility="visible"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_image"
        app:typographyType="body_2"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        app:typographyType="body_3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>