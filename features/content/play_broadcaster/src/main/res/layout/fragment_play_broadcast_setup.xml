<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_play_action_bar"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.play.broadcaster.view.custom.PlayShareFollowerView
        android:id="@+id/follower_view"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_setup"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="@id/btn_setup"
        app:layout_constraintEnd_toStartOf="@id/btn_setup"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/play_dp_18"
        android:text="@string/play_begin_setup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonSize="large"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_top_action_bottom_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="btn_setup, follower_view"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_terms_condition"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:background="@drawable/bg_play_terms_condition"
        android:paddingStart="@dimen/play_dp_12"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingEnd="@dimen/play_dp_12"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:textColor="@color/play_dms_white_68"
        app:layout_constraintBottom_toTopOf="@id/barrier_top_action_bottom_info"
        app:layout_constraintEnd_toEndOf="@id/btn_setup"
        app:layout_constraintStart_toStartOf="@id/follower_view"
        app:typographyType="body_3"
        tools:text="blab bla bla"
        />

</androidx.constraintlayout.widget.ConstraintLayout>