<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N700_68">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="@string/play_summary_title"
        android:textColor="@color/Neutral_N0"
        app:typographyType="heading_4" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_summary_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/fl_button_sticky"
        app:layout_constraintTop_toBottomOf="@+id/tv_page_title">

        <include
            android:id="@+id/layout_summary_content"
            layout="@layout/layout_play_summary_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toTopOf="@+id/fl_button_sticky"
            app:layout_constraintTop_toBottomOf="@+id/tv_page_title" />

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/fl_button_sticky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Neutral_N700_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_summary_info">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_lvl4"
            android:text="@string/play_summary_button_finish"
            app:unifyButtonSize="medium" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>