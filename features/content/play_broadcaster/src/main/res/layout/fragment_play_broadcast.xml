<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N700_68"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lvl4"
        android:gravity="center"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl4"
        app:layout_constraintEnd_toStartOf="@+id/tv_close"
        app:layout_constraintStart_toEndOf="@+id/tv_switch"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyWeight="bold"
        tools:text="Buat Live Streaming" />

    <include layout="@layout/view_request_permission"/>

    <TextView
        android:id="@+id/tv_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/fontSize_lvl3"
        android:textColor="@color/Neutral_N0"
        android:layout_margin="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Camera" />

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl3"
        android:layout_margin="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Close" />

</androidx.constraintlayout.widget.ConstraintLayout>