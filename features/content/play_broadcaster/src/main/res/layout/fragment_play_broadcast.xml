<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N700_68"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/view_request_permission"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_switch"
        android:layout_width="@dimen/play_width_icon"
        android:layout_height="@dimen/layout_lvl2"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/fontSize_lvl3"
        android:textColor="@color/Neutral_N0"
        android:layout_margin="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_switch_camera_white"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/play_width_icon"
        android:layout_height="@dimen/play_width_icon"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/Neutral_N0"
        android:textSize="@dimen/fontSize_lvl3"
        android:layout_marginTop="@dimen/play_space_icon_close"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/Neutral_N0"
        app:srcCompat="@drawable/ic_system_close_default"/>

</androidx.constraintlayout.widget.ConstraintLayout>