<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N700_96"
    android:fitsSystemWindows="false"
    tools:context=".view.fragment.PlayCoverCameraFragment">

    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/cvPlayCameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:cameraAudio="off"
        app:cameraFlash="off"
        app:cameraPictureFormat="jpeg"
        app:cameraPlaySounds="true"
        app:cameraUseDeviceOrientation="false" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/btnPlayCameraCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl6"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:text="@string/play_camera_cancel_label"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPlayCameraShutter"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        app:layout_constraintBottom_toTopOf="@+id/ivPlayCameraFlash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_play_camera_shutter" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPlayCameraFlash"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_play_camera_off_flash" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPlayCameraReverse"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_play_switch_camera_white" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPlayCameraTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:text="@string/play_camera_timer_label"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvPlayCameraTimer0"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPlayCameraTimer0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:text="@string/play_camera_timer_0_label"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/tvPlayCameraTimer"
        app:layout_constraintRight_toLeftOf="@+id/tvPlayCameraTimer5"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPlayCameraTimer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:text="@string/play_camera_timer_5_label"
        android:textColor="@color/play_white_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/tvPlayCameraTimer0"
        app:layout_constraintRight_toLeftOf="@+id/tvPlayCameraTimer10"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPlayCameraTimer10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:text="@string/play_camera_timer_10_label"
        android:textColor="@color/play_white_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@+id/tvPlayCameraTimer5"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <LinearLayout
        android:id="@+id/containerPlayCameraTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_select_from_camera"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lvl4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPlayCameraTimeToCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N0"
            android:textSize="@dimen/fontSize_lvl9"
            app:typographyWeight="bold"
            tools:text="5" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_camera_get_ready_label"
            android:textColor="@color/Neutral_N0"
            android:textSize="@dimen/fontSize_lvl9"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>