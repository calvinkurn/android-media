<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPlayCoverCropHeaderDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:text="@string/play_prepare_cover_title_header_description"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPlayCoverCropImage"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayCoverCropHeaderDescription" />

    <com.tokopedia.play.broadcaster.view.widget.PlayRectCropImageView
        android:id="@+id/ivPlayCoverCropOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/ivPlayCoverCropImage"
        app:layout_constraintLeft_toLeftOf="@+id/ivPlayCoverCropImage"
        app:layout_constraintRight_toRightOf="@+id/ivPlayCoverCropImage"
        app:layout_constraintTop_toTopOf="@+id/ivPlayCoverCropImage" />


    <LinearLayout
        android:id="@+id/containerPlayCoverTitleBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl1"
            android:background="@color/play_bg_shadow" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnPlayPrepareBroadcastNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:enabled="false"
            android:text="@string/play_prepare_broadcast_label_next" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>