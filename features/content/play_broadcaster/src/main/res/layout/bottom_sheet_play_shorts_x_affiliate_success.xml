<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/layout_success"
        layout="@layout/layout_play_shorts_affiliate_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/play_shorts_affiliate_success_button_next"
        app:layout_constraintBottom_toTopOf="@id/tv_success_shorts_affiliate_learn_more"
        app:layout_constraintTop_toBottomOf="@id/layout_success" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_success_shorts_affiliate_learn_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/play_shorts_affiliate_success_description_learn_more"
        android:typeface="normal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

</androidx.constraintlayout.widget.ConstraintLayout>