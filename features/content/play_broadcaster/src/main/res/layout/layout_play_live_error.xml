<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N700_68"
    android:padding="@dimen/spacing_lvl7">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_error_network"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:loader_type="circular_white" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title_error_network"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/play_live_broadcast_network_loss"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_desc_error_network"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/play_dp_12"
        android:gravity="center"
        android:text="@string/play_live_broadcast_network_loss_desc"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_error_network"
        app:typographyType="body_2" />

</androidx.constraintlayout.widget.ConstraintLayout>