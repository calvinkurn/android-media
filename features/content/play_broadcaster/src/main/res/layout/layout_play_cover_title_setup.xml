<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPlayCoverCropHeaderDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:text="@string/play_prepare_cover_title_header_description"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPlayCoverImage"
        android:layout_width="@dimen/play_cover_width"
        android:layout_height="@dimen/play_cover_height"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:background="@drawable/bg_play_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayCoverCropHeaderDescription" />

    <LinearLayout
        android:id="@+id/containerChangeCover"
        android:layout_width="146dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_play_choose_cover"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_lvl5"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingRight="@dimen/spacing_lvl5"
        android:paddingBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toTopOf="@+id/containerPlayCoverTitleDetail"
        app:layout_constraintLeft_toLeftOf="@+id/ivPlayCoverImage"
        app:layout_constraintRight_toRightOf="@+id/ivPlayCoverImage"
        app:layout_constraintTop_toTopOf="@+id/ivPlayCoverImage">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_play_action_camera_white" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/play_prepare_cover_title_choose_cover_label"
            android:textColor="@color/play_white_96"
            app:typographyType="body_1"
            app:typographyWeight="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerPlayCoverTitleDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_title"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="@+id/ivPlayCoverImage"
        app:layout_constraintLeft_toLeftOf="@+id/ivPlayCoverImage"
        app:layout_constraintRight_toRightOf="@+id/ivPlayCoverImage">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPlayCoverTitleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:typographyType="body_3"
            tools:text="Judul live streaming*" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPlayCoverTitleText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl6"
            android:background="@drawable/unify_textfield_bg"
            android:hint="@string/play_prepare_cover_title_default_title_placeholder"
            android:inputType="text"
            android:textColor="@color/Neutral_N0" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl1"
        android:background="@color/play_bg_shadow"
        app:layout_constraintBottom_toTopOf="@+id/containerPlayCoverCropBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/containerPlayCoverCropBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnPlayPrepareBroadcastNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/play_prepare_broadcast_label_next" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>