<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_70"
        android:layout_marginLeft="@dimen/dp_8"
        tools:text="Recommend Profiles"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardElevation="@dimen/dp_5"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dp_8">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.tokopedia.design.image.SquareImageView
                android:id="@+id/ivImage1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/ivImage2"/>

            <com.tokopedia.design.image.SquareImageView
                android:id="@+id/ivImage2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/ivImage1"
                app:layout_constraintRight_toLeftOf="@+id/ivImage3" />

            <com.tokopedia.design.image.SquareImageView
                android:id="@+id/ivImage3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/ivImage2"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@+id/ivImage1"
                app:layout_constraintBottom_toBottomOf="@+id/ivImage1"
                app:layout_constraintLeft_toLeftOf="@+id/btnFollow"
                app:layout_constraintRight_toRightOf="@+id/btnFollow"/>

            <com.tokopedia.design.component.ButtonCompat
                android:id="@+id/btnFollow"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_48"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_30"
                android:textAllCaps="false"
                tools:text="Follow"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@+id/ivImage1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:textSize="@dimen/sp_10"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/black_38"
                android:lineSpacingExtra="5sp"
                android:lines="2"
                android:ellipsize="end"
                tools:text="Disini anda mendapatkan harga fashion terbaik… terbaik… tse… terbaik… terbaik… terbaik… terbaik… terbaik… "
                app:layout_constraintTop_toTopOf="@+id/btnFollow"
                app:layout_constraintLeft_toRightOf="@+id/btnFollow"
                />

            <ImageView
                android:id="@+id/ivBadge"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="@id/ivProfile"
                app:layout_constraintLeft_toLeftOf="@id/tvDescription"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/sp_12"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/black_70"
                tools:text="Ernandaputra"
                app:layout_constraintLeft_toRightOf="@id/ivBadge"
                app:layout_constraintBottom_toBottomOf="@id/ivProfile"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
