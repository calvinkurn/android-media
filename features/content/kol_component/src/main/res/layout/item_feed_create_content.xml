<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/dp_5"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dp_8">
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16">
        
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black_70"
            android:layout_marginLeft="@dimen/dp_8"
            android:lines="1"
            android:ellipsize="end"
            tools:text="Hi, Benny Alexandra"
            app:layout_constraintLeft_toRightOf="@+id/ivImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/black_38"
            android:lineSpacingExtra="6sp"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
            tools:text="Post sesuatu untuk tokomu, yuk!"
            />

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btnSeeProfile"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:textSize="@dimen/sp_12"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/black_38"
            android:lineSpacingExtra="4sp"
            android:gravity="center"
            android:textAllCaps="false"
            app:buttonCompatType="secondary"
            tools:text="Lihat Profil"
            app:layout_constraintTop_toBottomOf="@id/ivImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnCreateContent"/>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btnCreateContent"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:textSize="@dimen/sp_12"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/black_38"
            android:lineSpacingExtra="4sp"
            android:gravity="center"
            android:textAllCaps="false"
            app:buttonCompatType="primary"
            tools:text="Buat Konten"
            app:layout_constraintTop_toBottomOf="@id/ivImage"
            app:layout_constraintLeft_toRightOf="@+id/btnSeeProfile"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>