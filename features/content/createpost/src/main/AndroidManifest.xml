<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.createpost.createpost">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.tokopedia.createpost.view.activity.CreatePostActivity"
            android:label="@string/cp_title_create_post"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter android:autoVerify="true">
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_content"
                    android:pathPattern="@string/applink_cp_path_create_post"
                    android:scheme="@string/internal_scheme" />
                <data
                    android:host="@string/host_content"
                    android:pathPattern="@string/applink_cp_path_draft_post"
                    android:scheme="@string/internal_scheme" />
                <data
                    android:host="@string/host_content"
                    android:pathPattern="@string/path_edit_post_shop"
                    android:scheme="@string/internal_scheme" />
                <data
                    android:host="@string/host_affiliate"
                    android:pathPattern="@string/applink_cp_path_draft_post"
                    android:scheme="@string/internal_scheme" />
                <data
                    android:host="@string/host_affiliate"
                    android:pathPattern="@string/applink_cp_path_create_post"
                    android:scheme="@string/internal_scheme" />
                <data
                    android:host="@string/host_content"
                    android:pathPattern="@string/path_edit_post_affiliate"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.createpost.view.activity.CreatePostMediaPreviewActivity"
            android:label="@string/cp_title_edit"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.tokopedia.createpost.view.activity.CreatePostImagePickerActivity"
            android:label="@string/cp_title_image_picker"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.tokopedia.createpost.view.activity.CreatePostVideoPickerActivity"
            android:label="@string/cp_title_image_video"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.tokopedia.createpost.view.activity.CreatePostImageEditorActivity"
            android:label="@string/cp_title_image_editor"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <service
            android:name="com.tokopedia.createpost.view.service.SubmitPostService"
            android:enabled="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>
</manifest>
