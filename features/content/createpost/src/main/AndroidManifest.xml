<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.createpost.createpost">
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.tokopedia.createpost.view.activity.CreatePostActivity"
            android:label="@string/title_af_create_post"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_content"
                    android:pathPattern="@string/path_edit_post_affiliate"/>
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_content"
                    android:pathPattern="@string/path_edit_post_shop"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.createpost.view.activity.MediaPreviewActivity"
            android:label="@string/af_title_edit"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.tokopedia.createpost.view.activity.CreatePostImagePickerActivity"
            android:label="@string/title_af_image_picker"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.tokopedia.createpost.view.activity.CreatePostVideoPickerActivity"
            android:label="@string/title_af_image_video"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.tokopedia.createpost.view.activity.CreatePostImageEditorActivity"
            android:label="@string/title_af_image_editor"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <service
            android:name="com.tokopedia.createpost.view.service.SubmitPostService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:enabled="true" />
    </application>
</manifest>
