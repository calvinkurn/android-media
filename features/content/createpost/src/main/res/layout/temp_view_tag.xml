<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="172dp"
    android:layout_height="60dp"
    android:animateLayoutChanges="true">

    <View
        android:id="@+id/topNotch"
        android:layout_width="28dp"
        android:layout_height="8dp"
        android:background="@drawable/ic_feed_up"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dot"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topNotch"
        app:layout_constraintWidth_default="spread" />

    <View
        android:id="@+id/bottomNotch"
        android:layout_width="28dp"
        android:layout_height="8dp"
        android:background="@drawable/ic_feed_down"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dot" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5.5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Fellow - Stagg EKG Electric...
Rp2.950.000"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn"
        app:layout_constraintStart_toStartOf="@+id/dot"
        app:layout_constraintTop_toTopOf="@+id/dot"
        app:layout_constraintWidth_default="spread" />

    <TextView
        android:id="@+id/slase_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="top"
        android:text="Rp2.950.000"
        android:textColor="#AAB4C8"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/dot"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="Rp2.750.000"
        android:textColor="#AAB4C8"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dot"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintEnd_toStartOf="@+id/btn"
        app:layout_constraintStart_toEndOf="@+id/slase_price"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintWidth_default="spread" />

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/clear"
        app:layout_constraintBottom_toBottomOf="@+id/dot"
        app:layout_constraintEnd_toEndOf="@+id/dot"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="@+id/dot" />

</androidx.constraintlayout.widget.ConstraintLayout>