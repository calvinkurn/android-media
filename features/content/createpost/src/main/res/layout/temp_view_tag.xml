<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="52dp"
    android:alpha="0.9"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    tools:visibility="visible">

    <View
        android:id="@+id/topNotch"
        android:layout_width="28dp"
        android:layout_height="8dp"
        android:background="@drawable/ic_feed_up"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/dot"
        app:layout_constraintBottom_toTopOf="@id/dot"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/dot"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topNotch"
        app:layout_constraintWidth_default="spread" />

    <View
        android:id="@+id/bottomNotch"
        android:layout_width="28dp"
        android:layout_height="8dp"
        android:background="@drawable/ic_feed_down"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dot"
        app:layout_constraintTop_toBottomOf="@+id/dot" />

    <LinearLayout
        android:id="@+id/bubble_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/dot"
        app:layout_constraintEnd_toStartOf="@id/product_tag_clear"
        app:layout_constraintStart_toEndOf="@id/product_tag_clear_right"
        app:layout_constraintTop_toTopOf="@id/dot">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_tag_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="marquee"
            android:maxWidth="145dp"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:textColor="@color/Unify_N0"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Fellow - Stagg EKG Electric Pour Over Kett"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_tag_slashed_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:textColor="@color/Unify_NN400"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/product_tag_name_text"
                app:layout_constraintTop_toBottomOf="@id/product_tag_name_text"
                app:typographyType="body_3"
                tools:text="Rp2.750.000"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_tag_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:textColor="@color/Unify_NN400"
                app:layout_constraintBottom_toBottomOf="@id/product_tag_slashed_price_text"
                app:layout_constraintStart_toEndOf="@id/product_tag_slashed_price_text"
                app:layout_constraintTop_toTopOf="@id/product_tag_slashed_price_text"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="Rp2.750.000" />
        </LinearLayout>
    </LinearLayout>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/product_tag_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        app:icon_color_light_enable="@color/Unify_N0"
        app:icon_name="CLEAR"
        app:layout_constraintBottom_toBottomOf="@id/dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bubble_text_layout"
        app:layout_constraintTop_toTopOf="@id/dot"
        app:unify_image_type="circle"
        tools:visibility="gone"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/product_tag_clear_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:visibility="gone"
        app:icon_color_light_enable="@color/Unify_N0"
        app:icon_name="CLEAR"
        app:layout_constraintBottom_toBottomOf="@id/dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/dot"
        app:unify_image_type="circle"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>