<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/search_category_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/content_creator_icon"
            android:layout_width="@dimen/unify_font_20"
            android:layout_height="@dimen/unify_font_20"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/search_type_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_gravity="center_vertical"
            android:textColor="@color/Unify_NN950"
            app:typographyType="heading_4"
            app:typographyWeight="bold"
            tools:text="Fellow - Stagg EKG Electric Pour Over Kettle jcinecoheh" />

    </LinearLayout>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/content_creator_expand_icon"
        android:layout_width="@dimen/unify_space_24"
        android:layout_height="@dimen/unify_space_24"
        android:layout_marginStart="@dimen/unify_space_16"
        app:icon_color_light_enable="@color/Unify_NN900"
        app:icon_name = "CHEVRON_RIGHT"
        app:icon_enable_state="true"
        android:foregroundGravity="right"
        android:layout_gravity="center_vertical|right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

