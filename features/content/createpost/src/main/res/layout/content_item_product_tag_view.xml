<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/Unify_N0"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        tools:ignore="UnusedAttribute">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/productImage"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:adjustViewBounds="true"
            android:background="@color/Unify_N0"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/productNameSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="Fellow - Stagg EKG Electric Pour Over Kettle" />


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:textColor="@color/Unify_NN400"
                android:visibility="visible"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="Rp2.750.000"
                tools:visibility="visible" />


        </LinearLayout>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/product_content_tag_delete_button"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_20"
            app:icon_color_light_enable="@color/Unify_NN950"
            app:icon_color_night_enable="@color/Unify_NN950"
            app:icon_name="DELETE"
            app:unify_image_type="circle" />

    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>