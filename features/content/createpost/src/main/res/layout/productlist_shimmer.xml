        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/include_shimmer_7"
        app:layout_constraintTop_toBottomOf="@+id/include_shimmer_6" />

    <include
        android:id="@+id/include_shimmer_9"
        layout="@layout/shimmer_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/include_shimmer_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_shimmer_7" />

    <include
        android:id="@+id/include_shimmer_10"
        layout="@layout/shimmer_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/include_shimmer_9"
        app:layout_constraintTop_toBottomOf="@+id/include_shimmer_8" />


</androidx.constraintlayout.widget.ConstraintLayout>

