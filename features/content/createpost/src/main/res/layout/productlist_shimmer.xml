        app:layout_constraintTop_toBottomOf="@+id/include_shimmer_1" />

    <include
        android:id="@+id/include_shimmer_5"
        layout="@layout/shimmer_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/include_shimmer_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_shimmer_3" />

    <include
        android:id="@+id/include_shimmer_6"
        layout="@layout/shimmer_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/include_shimmer_5"
        app:layout_constraintTop_toBottomOf="@+id/include_shimmer_4" />

    <include
        android:id="@+id/include_shimmer_7"
        layout="@layout/shimmer_item"
