<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="4dp"
    android:background="@color/Unify_Background"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    >

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/shop_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:unify_image_corner_radius="16"
            android:background="@color/Unify_N0"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/shopNameSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/shop_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/shop_location"
            >

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/shop_badge"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:unify_image_corner_radius="16"
                android:background="@color/Unify_N0"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars"
                />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="40"
                android:maxLines="1"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="Fellow - Stagg EKG Electric Pour Over Kettle jcinecoheh" />

        </LinearLayout>
       <com.tokopedia.unifyprinciples.Typography
           android:id="@+id/shop_location"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:ellipsize="end"
           android:gravity="bottom"
           android:maxLines="1"
           android:textColor="@color/Unify_NN400"
           android:visibility="visible"
           app:typographyType="body_3"
           app:typographyWeight="bold"
           tools:text="Rp2.750.000"
           tools:visibility="visible"
           app:layout_constraintStart_toStartOf="@id/shopNameSection"
           app:layout_constraintTop_toBottomOf="@id/shopNameSection"
           app:layout_constraintBottom_toBottomOf="@id/shop_image"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:layout_width="92dp"
            android:layout_height="@dimen/unify_space_32"
            android:text="@string/content_creation_search_shop_item_button_text"
            app:unifyButtonVariant="ghost"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            app:layout_constraintTop_toTopOf="@id/shopNameSection"
            app:layout_constraintBottom_toBottomOf="@id/shop_location"
            app:layout_constraintEnd_toEndOf="parent"/>

   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>