<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@drawable/card_shadow_bottom"
        android:gravity="center_vertical">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/content_back_button"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_14"
            app:icon_color_light_enable="@color/Unify_NN900"
            app:icon_name="ARROW_BACK"
            android:layout_gravity="center"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/content_post_avatar"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginStart="@dimen/dp_12"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/post_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/feed_content_post_sebagai"
                android:textColor="@color/Unify_NN600"
                app:typographyType="body_3"
                tools:text="Post Sebagai" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/content_post_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/Unify_NN950"
                app:typographyType="heading_4"
                app:typographyWeight="bold"
                tools:text="Fellow Official" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/content_action_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_GN500"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            app:typographyWeight="bold"
            android:text="@string/feed_content_text_lanjut"
            app:typographyType="heading_4" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>