<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    tools:context="com.tokopedia.createpost.view.plist.ShopProductListActivity">

    <com.tokopedia.unifycomponents.SearchBarUnify
        android:id="@+id/sb_shop_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:search_bar_clearable="true"
        app:search_bar_placeholder="Cari produk di Fellow Official" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/cu_sort_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:chipText="@string/feed_product_page_filter_title"
        app:chipSize="medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_shop_product" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dp_140"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="@dimen/dp_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cu_sort_chip" />

</androidx.constraintlayout.widget.ConstraintLayout>