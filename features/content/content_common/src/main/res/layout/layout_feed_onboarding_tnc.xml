<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_tnc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ugc_complete_onboarding_tnc_title"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_1"
        app:typographyWeight="bold" />

    <LinearLayout
        android:id="@+id/ll_tnc_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_tnc_title">

        <View
            android:id="@+id/point_1"
            android:layout_width="@dimen/unify_space_12"
            android:layout_height="@dimen/unify_space_12"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_feed_point" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_tnc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:text="@string/ugc_onboarding_tnc_1"
            android:textColor="@color/Unify_NN600"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tnc_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_tnc_1">

        <View
            android:id="@+id/point_2"
            android:layout_width="@dimen/unify_space_12"
            android:layout_height="@dimen/unify_space_12"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_feed_point" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_tnc_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:text="@string/ugc_onboarding_tnc_2"
            android:textColor="@color/Unify_NN600"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

    </LinearLayout>

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cbx_tnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_tnc_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_accept_tnc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:text="@string/ugc_onboarding_accept_tnc"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cbx_tnc"
        app:layout_constraintTop_toTopOf="@id/cbx_tnc"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

</androidx.constraintlayout.widget.ConstraintLayout>