<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_tagged_product_label"
    android:orientation="horizontal">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_shop_bag"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_margin="@dimen/unify_space_4"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="SHOPPING_BAG"
        android:background="@drawable/bg_shopping_bag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_tagged_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:gravity="center"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="@+id/iv_shop_bag"
        app:layout_constraintStart_toEndOf="@+id/iv_shop_bag"
        app:layout_constraintTop_toTopOf="@+id/iv_shop_bag"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="123123123" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_tagged_product_chevron"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginEnd="@dimen/unify_space_8"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tagged_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_tagged_product"
        app:layout_constraintTop_toTopOf="@+id/tv_tagged_product" />


</androidx.constraintlayout.widget.ConstraintLayout>