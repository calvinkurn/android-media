<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <FrameLayout
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:padding="@dimen/spacing_lvl2"
        >

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_benefit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon_color_light_enable="@color/Unify_GN500"
            app:icon_color_night_enable="@color/Unify_GN500"
            />

    </FrameLayout>
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_benefit_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:textColor="@color/Unify_NN950"
        app:typographyType="body_3"
        tools:text="Bantu meningkatkan penjualanmu"
        />

</LinearLayout>