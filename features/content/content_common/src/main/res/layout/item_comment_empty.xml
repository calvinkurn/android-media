<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_comment_empty"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="@dimen/layout_lvl7"
        app:icon_name="CHAT" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_comment_empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_comment_empty_title"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_comment_empty_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_comment_empty_desc"
        app:typographyType="paragraph_2" />
</LinearLayout>
