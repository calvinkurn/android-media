<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:interpolator="@android:interpolator/linear_out_slow_in"
    android:duration="@integer/animation_duration">

     Start sliding to bottom all the views of the activity (except some)
    <slide android:slideEdge="bottom"
        android:duration="@integer/animation_duration">
        <targets>
            <target android:excludeId="@android:id/navigationBarBackground" />
            <target android:excludeId="@android:id/statusBarBackground" />
            <target android:excludeId="@id/texture_view" />
        </targets>
    </slide>

    <transition
        class="android.transition.Slide"/>

    <!-- Start fading some views to make sure they disappear before the middle of the screen -->
    <fade android:duration="@integer/animation_alpha_duration_return">
        <targets>
            <target android:targetId="@id/fl_interaction" />
            <target android:targetId="@id/fl_global_error" />
            <target android:targetId="@id/iv_close" />
            <target android:targetId="@id/tv_partner_name" />
            <target android:targetId="@id/tv_stream_name" />
            <target android:targetId="@id/cl_like"/>
            <target android:targetId="@id/cl_toolbar"/>
            <target android:targetId="@id/cl_chat_form"/>
        </targets>
    </fade>

</transitionSet>