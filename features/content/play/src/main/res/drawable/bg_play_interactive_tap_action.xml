<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            >
            <size
                android:width="@dimen/play_interactive_tap_action"
                android:height="@dimen/play_interactive_tap_action"
                />
            <gradient
                android:startColor="@color/play_dms_interactive_live_bg_1"
                android:endColor="@color/play_dms_interactive_live_bg_2"
                android:angle="-90"
                />
            <corners
                android:radius="@dimen/play_interactive_prestart_radius"
                />
        </shape>
    </item>

    <item
        android:left="@dimen/play_interactive_tap_inside_margin"
        android:right="@dimen/play_interactive_tap_inside_margin"
        android:top="@dimen/play_interactive_tap_inside_margin"
        android:bottom="@dimen/play_interactive_tap_inside_margin">
        <shape
            android:shape="oval"
            >
            <size
                android:width="@dimen/play_interactive_tap_action"
                android:height="@dimen/play_interactive_tap_action"
                />
            <solid
                android:color="#00FFFFFF"
                />
            <stroke
                android:width="1dp"
                android:color="@color/Unify_Static_White_44"
                />
        </shape>
    </item>
</layer-list>
