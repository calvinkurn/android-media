<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/play_iv_ribbon"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@id/play_tv_ribbon"
            app:layout_constraintEnd_toEndOf="@id/play_tv_ribbon"
            app:layout_constraintStart_toStartOf="@id/play_tv_ribbon"
            app:layout_constraintTop_toTopOf="@+id/play_tv_ribbon" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/play_iv_ribbon"
            android:layout_width="0dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="@id/play_tv_ribbon"
            app:layout_constraintEnd_toEndOf="@id/play_tv_ribbon"
            app:layout_constraintStart_toStartOf="@id/play_tv_ribbon"
            app:layout_constraintTop_toTopOf="@+id/play_tv_ribbon"  />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="2500">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="0"
                app:motionTarget="@+id/play_tv_ribbon" />
            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@+id/play_tv_ribbon" />

<!--            <KeyAttribute-->
<!--                android:scaleX="0.1"-->
<!--                app:framePosition="0"-->
<!--                app:motionTarget="@+id/play_iv_ribbon" />-->
<!--            <KeyAttribute-->
<!--                android:scaleX="1.0"-->
<!--                app:framePosition="100"-->
<!--                app:motionTarget="@+id/play_iv_ribbon" />-->

        </KeyFrameSet>
    </Transition>
</MotionScene>
