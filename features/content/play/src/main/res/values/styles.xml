<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Play.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|stateHidden</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">@transition/anim_play_shared_enter</item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">@transition/anim_play_shared_enter</item>
    </style>
</resources>