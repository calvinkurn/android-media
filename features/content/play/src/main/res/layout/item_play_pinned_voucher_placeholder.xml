<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_play_voucher_placeholder_gray"
    android:padding="@dimen/spacing_lvl3"
    >

    <View
        android:id="@+id/ph_pinned_voucher_image"
        style="@style/PlayPlaceholder.Dark"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" 
        />

    <View
        android:id="@+id/ph_pinned_voucher_title"
        style="@style/PlayPlaceholder.Dark"
        android:layout_width="@dimen/play_pinned_placeholder_title_width"
        android:layout_height="@dimen/play_pinned_placeholder_height"
        android:layout_marginStart="@dimen/play_voucher_title_image_margin"
        android:textColor="@color/Unify_N0"
        app:layout_constraintBottom_toTopOf="@id/ph_pinned_voucher_description"
        app:layout_constraintStart_toEndOf="@id/ph_pinned_voucher_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <View
        android:id="@+id/ph_pinned_voucher_description"
        style="@style/PlayPlaceholder.Dark"
        android:layout_width="@dimen/play_pinned_placeholder_desc_width"
        android:layout_height="@dimen/play_pinned_placeholder_height"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:textColor="@color/Unify_N0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ph_pinned_voucher_title"
        app:layout_constraintTop_toBottomOf="@id/ph_pinned_voucher_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>