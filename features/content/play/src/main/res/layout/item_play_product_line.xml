<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_product_image"
        android:layout_width="@dimen/play_product_line_image_size"
        android:layout_height="@dimen/play_product_line_image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/play_product_line_title_image_margin"
        android:layout_marginLeft="@dimen/play_product_line_title_image_margin"
        android:layout_marginRight="@dimen/play_product_line_title_image_margin"
        android:layout_marginEnd="@dimen/play_product_line_title_image_margin"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/iv_product_image"
        app:layout_constraintTop_toTopOf="@id/iv_product_image"
        app:layout_constraintBottom_toTopOf="@id/ll_product_discount"
        app:layout_constraintEnd_toStartOf="@+id/btn_product_buy"
        app:typographyType="body_2"
        tools:text="Alyssa Suede Flats "
        />

    <LinearLayout
        android:id="@+id/ll_product_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/tv_product_title"
        app:layout_constraintStart_toStartOf="@id/tv_product_title"
        app:layout_constraintBottom_toTopOf="@id/tv_current_price"
        tools:visibility="gone"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_lvl2"
            android:paddingEnd="@dimen/spacing_lvl2"
            android:paddingTop="@dimen/spacing_lvl1"
            android:paddingBottom="@dimen/spacing_lvl1"
            android:background="@drawable/bg_play_discount_badge"
            android:textColor="@color/Red_R400"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="57%"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:textColor="@color/Neutral_N700_44"
            app:typographyType="small"
            tools:text="Rp349.000"
            />

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="@id/ll_product_discount"
        app:layout_constraintTop_toBottomOf="@id/ll_product_discount"
        app:layout_constraintBottom_toBottomOf="@id/iv_product_image"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp150.000"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_product_buy"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:paddingStart="@dimen/play_product_line_buy_padding_start_end"
        android:paddingEnd="@dimen/play_product_line_buy_padding_start_end"
        android:text="@string/play_buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_product_image"
        app:unifyButtonSize="small"
        app:unifyButtonType="transaction"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_product_atc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        app:layout_constraintStart_toStartOf="@id/btn_product_buy"
        app:layout_constraintEnd_toEndOf="@id/btn_product_buy"
        app:layout_constraintTop_toBottomOf="@id/btn_product_buy"
        app:layout_constraintBottom_toBottomOf="@id/iv_product_image"
        app:srcCompat="@drawable/ic_cart_grayscale_20"
        />

</androidx.constraintlayout.widget.ConstraintLayout>