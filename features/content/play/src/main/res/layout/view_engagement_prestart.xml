<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/play_engagement_prestart_width"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_play_engagement_prestart"
    >

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_play_engagement_prestart_decor"
    />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_gift"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/play_offset_10"
        android:layout_marginTop="@dimen/play_offset_10"
        app:icon_color_light_disabled="@color/Unify_Static_White"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_disabled="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="GIFT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:inputType="textNoSuggestions"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="@id/icon_gift"
        app:layout_constraintStart_toEndOf="@id/icon_gift"
        app:layout_constraintTop_toTopOf="@id/icon_gift"
        app:typographyType="small"
        android:text="Tap Tap Hadiah"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_engagement_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginEnd="@dimen/play_offset_14"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_gift"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        android:text="Giveaway Headset Wireless Xiaomi"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_engagement_follow"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:text="Follow Buat Ikutan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_engagement_title"
        app:unifyButtonSize="micro"
        app:unifyButtonType="alternate"
        app:unifyButtonVariant="ghost"
        app:unifyButtonInvers="true"
        />

    <com.tokopedia.unifycomponents.timer.TimerUnifySingle
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_engagement_follow"
        app:timer_unify_single_remainingMinutes="5"
        app:timer_unify_single_text="Dimulai dalam:"
        app:timer_unify_single_textWidth="full_radius"
        app:timer_unify_single_type="hour"
        app:timer_unify_single_variant="alternate"
        />

</androidx.constraintlayout.widget.ConstraintLayout>