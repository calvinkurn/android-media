<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_voucher_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_voucher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_96"
        android:layout_marginStart="@dimen/play_voucher_title_image_margin"
        app:layout_constraintBottom_toTopOf="@id/tv_voucher_description"
        app:layout_constraintStart_toEndOf="@id/iv_voucher_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Gratis ongkir 30rb"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_voucher_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_voucher_title"
        app:layout_constraintTop_toBottomOf="@id/tv_voucher_title"
        app:typographyType="small"
        tools:text="min. pembelian 100rb"
        />

    <View
        android:id="@+id/view_voucher_divider"
        android:layout_width="@dimen/play_voucher_copy_divider_width"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:background="@color/Unify_N75"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_voucher_description"
        app:layout_constraintStart_toEndOf="@id/tv_voucher_description"
        app:layout_constraintTop_toTopOf="@id/tv_voucher_title"
        tools:visibility="visible"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_voucher_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:textColor="@color/Unify_G500"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_voucher_divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Salin"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>