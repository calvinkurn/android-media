<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_play_live_ended"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:background="@color/play_video_background"
        tools:layout_height="match_parent"
        tools:layout_width="match_parent"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_live_ended_title"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/play_live_ended_title"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="@id/txt_live_ended_body"
            app:layout_constraintStart_toStartOf="@id/txt_live_ended_body"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_live_ended_body"
            app:typographyType="heading_3"
            app:typographyWeight="bold"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_live_ended_body"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/play_live_ended_title"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="@id/btn_live_ended_action"
            app:layout_constraintStart_toStartOf="@id/btn_live_ended_action"
            app:layout_constraintTop_toBottomOf="@id/txt_live_ended_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:typographyType="body_2"
            />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_live_ended_action"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl5"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>