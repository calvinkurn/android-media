<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_play_live_ended"
    android:layout_width="@dimen/layout_lvl0"
    android:layout_height="@dimen/layout_lvl0"
    android:paddingBottom="@dimen/spacing_lvl4"
    tools:background="@color/play_video_background"
    tools:layout_height="match_parent"
    tools:layout_width="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_live_ended_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/play_live_ended_title"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginBottom="@dimen/spacing_lvl8"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/space"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        tools:text="Live streaming telah berakhir"
        />

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>