<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/fl_product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_product_line_image"
        android:padding="@dimen/play_product_line_image_border_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.tokopedia.play_common.view.RoundedImageView
            android:id="@+id/iv_product_image"
            android:layout_width="@dimen/play_product_image_size"
            android:layout_height="@dimen/play_product_image_size"
            app:cornerRadius="@dimen/play_product_image_radius"
            tools:src="@tools:sample/avatars"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_out_of_stock"
            android:layout_width="@dimen/play_product_image_size"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_play_product_out_of_stock"
            android:gravity="center"
            android:text="@string/play_out_of_stock"
            android:textColor="@color/Unify_Static_White"
            android:textSize="@dimen/fontSize_lvl1"
            android:visibility="invisible"
            app:typographyWeight="bold"
            tools:visibility="visible" />

    </FrameLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/play_product_line_title_image_margin"
        android:layout_marginLeft="@dimen/play_product_line_title_image_margin"
        android:layout_marginRight="@dimen/play_product_line_title_image_margin"
        android:layout_marginEnd="@dimen/play_product_line_title_image_margin"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/fl_product_image"
        app:layout_constraintTop_toTopOf="@id/fl_product_image"
        app:layout_constraintBottom_toTopOf="@id/ll_product_discount"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_2"
        tools:text="Alyssa Suede Flats "
        />

    <LinearLayout
        android:id="@+id/ll_product_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/tv_product_title"
        app:layout_constraintStart_toStartOf="@id/tv_product_title"
        app:layout_constraintBottom_toTopOf="@id/tv_current_price"
        tools:visibility="gone"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_product_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_lvl2"
            android:paddingEnd="@dimen/spacing_lvl2"
            android:paddingTop="@dimen/spacing_lvl1"
            android:paddingBottom="@dimen/spacing_lvl1"
            android:background="@drawable/bg_play_discount_badge"
            android:textColor="@color/Unify_R400"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="57%"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_N700_44"
            app:typographyType="small"
            tools:text="Rp349.000"
            />

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="@id/ll_product_discount"
        app:layout_constraintTop_toBottomOf="@id/ll_product_discount"
        app:layout_constraintBottom_toBottomOf="@id/fl_product_image"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp150.000"
        />

</androidx.constraintlayout.widget.ConstraintLayout>