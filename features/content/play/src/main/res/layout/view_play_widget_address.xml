<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_container_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_chat"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iv_location"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:icon_color_light_enable="@color/Unify_Static_White"
            app:icon_color_light_disabled="@color/Unify_Static_White"
            app:icon_color_night_enable="@color/Unify_Static_White"
            app:icon_color_night_disabled="@color/Unify_Static_White"
            app:icon_name="LOCATION" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_address_desc"
            app:typographyType="body_2"
            android:padding="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_Static_White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            tools:text="Lokasimu belum tersedia.Lokasimu belum tersedia.Lokasimu belum tersedia." />
    </LinearLayout>


    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_change_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/play_change_address_widget_wording"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ll_container_address"
        app:layout_constraintTop_toBottomOf="@+id/ll_container_address" />
</androidx.constraintlayout.widget.ConstraintLayout>

