<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.play_common.view.RoundedFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_play_interactive"
    app:cornerRadius="@dimen/play_interactive_common_radius"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_play_interactive_decor"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lvl3"
        >

        <com.tokopedia.play_common.view.RoundedFrameLayout
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl2"
            android:background="@color/play_dms_interactive_loader_bg"
            app:cornerRadius="@dimen/play_interactive_loader_radius"
            />

        <com.tokopedia.play_common.view.RoundedFrameLayout
            android:layout_width="@dimen/play_interactive_loader_2_width"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:background="@color/play_dms_interactive_loader_bg"
            app:cornerRadius="@dimen/play_interactive_loader_radius"
            />

        <com.tokopedia.play_common.view.RoundedFrameLayout
            android:layout_width="@dimen/play_interactive_loader_3_width"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:background="@color/play_dms_interactive_loader_bg"
            app:cornerRadius="@dimen/play_interactive_loader_radius"
            />

        <com.tokopedia.play_common.view.RoundedFrameLayout
            android:layout_width="@dimen/play_interactive_loader_4_width"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:background="@color/play_dms_interactive_loader_bg"
            app:cornerRadius="@dimen/play_interactive_loader_radius"
            />

    </LinearLayout>



</com.tokopedia.play_common.view.RoundedFrameLayout>