<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.play_common.view.RoundedConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_play_interactive"
    app:rcl_cornerRadius="@dimen/play_interactive_common_radius"
    >

    <com.tokopedia.play_common.view.RemoteImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl0"
        android:adjustViewBounds="true"
        app:cacheStrategy="data"
        app:imageUrl="https://images.tokopedia.net/img/android/content/play/ic_play_interactive_decor.png"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/spacing_lvl3"
        >

        <com.tokopedia.play_common.view.RoundedFrameLayout
            android:id="@+id/fl_placeholder_1"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl2"
            android:background="@color/play_dms_interactive_loader_bg"
            app:rfl_cornerRadius="@dimen/play_interactive_loader_radius"
            />

        <com.tokopedia.play_common.view.RoundedFrameLayout
            android:id="@+id/fl_placeholder_2"
            android:layout_width="@dimen/play_interactive_loader_2_width"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:background="@color/play_dms_interactive_loader_bg"
            app:rfl_cornerRadius="@dimen/play_interactive_loader_radius"
            />

        <com.tokopedia.play_common.view.RoundedFrameLayout
            android:id="@+id/fl_placeholder_3"
            android:layout_width="@dimen/play_interactive_loader_3_width"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:background="@color/play_dms_interactive_loader_bg"
            app:rfl_cornerRadius="@dimen/play_interactive_loader_radius"
            />

        <com.tokopedia.play_common.view.RoundedFrameLayout
            android:id="@+id/fl_placeholder_4"
            android:layout_width="@dimen/play_interactive_loader_4_width"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:background="@color/play_dms_interactive_loader_bg"
            app:rfl_cornerRadius="@dimen/play_interactive_loader_radius"
            />

    </LinearLayout>

</com.tokopedia.play_common.view.RoundedConstraintLayout>