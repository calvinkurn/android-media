<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/ph_voucher_image"
        style="@style/PlayPlaceholder"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/ph_voucher_title"
        style="@style/PlayPlaceholder"
        android:layout_width="@dimen/play_placeholder_voucher_title_width"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/play_voucher_title_image_margin"
        android:layout_marginLeft="@dimen/play_voucher_title_image_margin"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toTopOf="@id/ph_voucher_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ph_voucher_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <View
        android:id="@+id/ph_voucher_description"
        style="@style/PlayPlaceholder"
        android:layout_width="@dimen/play_placeholder_voucher_title_width"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ph_voucher_title"
        app:layout_constraintStart_toStartOf="@id/ph_voucher_title"
        app:layout_constraintTop_toBottomOf="@id/ph_voucher_title"
        />


</androidx.constraintlayout.widget.ConstraintLayout>