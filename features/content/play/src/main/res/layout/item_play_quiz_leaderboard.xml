<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/play_dp_14"
    android:layout_marginTop="@dimen/spacing_lvl4"
    android:layout_marginEnd="@dimen/play_dp_14"
    android:paddingBottom="@dimen/spacing_lvl3">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_quiz_leaderboard_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Quiz Balapan Ikan KOI" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_quiz_reward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iconUnify"
        app:layout_constraintEnd_toEndOf="@+id/tv_quiz_leaderboard_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iconUnify"
        app:layout_constraintTop_toTopOf="@+id/iv_interactive"
        tools:text="Album Seventeen: Hengg:rae" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_interactive"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_quiz_leaderboard_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_quiz_leaderboard_title"
        tools:icon_name="GIFT" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/tv_quiz_leaderboard_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tv_quiz_leaderboard_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_quiz_reward"
        tools:listitem="@layout/item_quiz_choice" />

</androidx.constraintlayout.widget.ConstraintLayout>