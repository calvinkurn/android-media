<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.play_common.view.RoundedConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:rcl_cornerRadius="@dimen/play_real_time_notif_radius"
    tools:background="@color/Unify_B300"
    >
    
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_notif"
        android:layout_width="@dimen/play_real_time_notif_icon_size"
        android:layout_height="@dimen/play_real_time_notif_icon_size"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_notif_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_Static_White_96"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_notif"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="eggy &amp; 10 penonton lainnya follow toko ini"
        />

</com.tokopedia.play_common.view.RoundedConstraintLayout>