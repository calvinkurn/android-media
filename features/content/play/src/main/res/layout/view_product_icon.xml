<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_play_featured_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_color_night_enable="@color/Unify_NN700"
        app:icon_color_light_enable="@color/Unify_NN700"
        app:icon_name="PRODUCT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_play_total_featured_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_product_icon_total"
        android:gravity="center"
        android:textColor="@color/Unify_Static_White"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="small"
        app:typographyWeight="bold"
        tools:text="15"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>