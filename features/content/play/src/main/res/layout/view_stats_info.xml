<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_stats_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <include
        android:id="@+id/live_badge"
        layout="@layout/layout_live_badge"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <include layout="@layout/layout_total_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:background="@drawable/bg_play_stats_info_view_badge"
        />

</LinearLayout>