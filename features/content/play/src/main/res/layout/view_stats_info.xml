<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_stats_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <include
            android:id="@+id/live_badge"
            layout="@layout/layout_live_badge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginLeft="@dimen/spacing_lvl2"
            android:background="@drawable/bg_play_stats_info_view_badge"
            android:orientation="horizontal"
            android:padding="@dimen/play_view_stats_info_view_padding"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/live_badge"
            app:layout_constraintStart_toEndOf="@id/live_badge"
            app:layout_constraintTop_toTopOf="@id/live_badge"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/spacing_lvl4"
                android:layout_height="@dimen/spacing_lvl4"
                app:srcCompat="@drawable/ic_play_eye_white"
                />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_total_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:textColor="@color/Neutral_N0"
                android:includeFontPadding="false"
                app:typographyType="body_3"
                tools:text="@string/play_mock_view"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>