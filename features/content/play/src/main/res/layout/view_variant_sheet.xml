<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_variant_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_lvl4"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:background="@drawable/bg_play_product_sheet"
        app:behavior_skipCollapsed="true"
        app:behavior_hideable="true"
        app:layout_behavior="com.tokopedia.play.view.custom.behavior.LockableBottomSheetBehavior"
        tools:parentTag="androidx.coordinatorlayout.widget.CoordinatorLayout">

        <include layout="@layout/bottomsheet_header"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_variant_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_header"
            />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_action"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>