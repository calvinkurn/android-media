<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_variant_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_bottom_sheet"
        app:behavior_hideable="true"
        app:behavior_skipCollapsed="true"
        app:layout_behavior="com.tokopedia.play.view.custom.behavior.LockableBottomSheetBehavior"
        tools:parentTag="androidx.coordinatorlayout.widget.CoordinatorLayout"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_variant_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:paddingTop="@dimen/spacing_lvl4"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_container">

            <include layout="@layout/bottom_sheet_header"/>
            <include layout="@layout/bottom_sheet_product_variant"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_variant_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl0"
                app:layout_constraintTop_toBottomOf="@id/cl_product_variant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/btn_container"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:background="@color/Neutral_N0"
            android:elevation="@dimen/play_product_action_container_elevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginBottom="@dimen/spacing_lvl3"
                app:unifyButtonType="transaction"
                />

        </FrameLayout>

        <include layout="@layout/bottom_sheet_bottom_overlay"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>