<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/play_dms_N600"
    >

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_back"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:padding="@dimen/spacing_lvl2"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_name="CLOSE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_button_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginEnd="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back"
            app:srcCompat="@drawable/ic_play_more_white"
            />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iv_copy_link"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:visibility="invisible"
            app:icon_color_light_enable="@color/Unify_Static_White"
            app:icon_name="LINK"
            tools:visibility="visible" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_partner"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/play_toolbar_back_button_margin"
        android:layout_marginEnd="@dimen/play_toolbar_back_button_margin"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/ll_button_action"
        app:layout_goneMarginLeft="16dp"
        app:layout_goneMarginStart="16dp"
        tools:visibility="visible"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_partner_name"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintEnd_toStartOf="@id/v_separator"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="@string/play_mock_shop_name"
            />

        <View
            android:id="@+id/v_separator"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_play_circle_separator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_follow"
            app:layout_constraintStart_toEndOf="@id/tv_partner_name"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/v_separator"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="@string/play_follow"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_followable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="v_separator,tv_follow"
            tools:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>