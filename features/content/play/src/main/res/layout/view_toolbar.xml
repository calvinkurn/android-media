<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/Neutral_N600"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_back_white"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_more"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_marginRight="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:srcCompat="@drawable/ic_play_more_white"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:id="@+id/rl_cart"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/play_cart_margin"
        android:layout_marginRight="@dimen/play_cart_margin"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        android:visibility="invisible">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:srcCompat="@drawable/ic_cart_grayscale_20"
            android:tint="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/tv_badge_cart"
            android:layout_width="@dimen/play_cart_badge_size"
            android:layout_height="@dimen/play_cart_badge_size"
            android:background="@drawable/shape_play_cart_dots"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textSize="@dimen/fontSize_lvl10"
            android:textStyle="bold"
            android:textColor="@color/Neutral_N0"
            android:visibility="invisible"
            tools:text="99"/>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_partner"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/play_toolbar_back_button_margin"
        android:layout_marginEnd="@dimen/play_toolbar_back_button_margin"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/iv_more"
        app:layout_goneMarginLeft="@dimen/dp_16"
        app:layout_goneMarginStart="@dimen/dp_16"
        tools:visibility="visible"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_partner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="@string/play_mock_shop_name"
            />

        <View
            android:id="@+id/v_separator"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/bg_play_circle_separator"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_partner_name"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@color/Neutral_N0"
            app:layout_constraintStart_toEndOf="@id/v_separator"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="@string/play_follow"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_followable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="v_separator,tv_follow"
            tools:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>