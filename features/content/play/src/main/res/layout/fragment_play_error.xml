<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="gone"
    android:id="@+id/container_global_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/spacing_lvl4"
    android:background="@color/play_error_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/global_error"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_margin="@dimen/spacing_lvl4"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_back_white" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_play_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:ellipsize="end"
        android:lineHeight="@dimen/sp_20"
        android:maxLines="1"
        android:text="@string/play_title"
        android:textColor="@color/Neutral_N0"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        app:layout_constraintStart_toEndOf="@id/img_back"
        app:layout_constraintTop_toTopOf="@id/img_back"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>