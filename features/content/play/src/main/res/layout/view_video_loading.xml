<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/play_dms_loading_overlay_background"
    tools:background="@color/Unify_Static_Black"
    >

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/iv_loading"
        android:layout_width="@dimen/play_viewer_loading_size"
        android:layout_height="@dimen/play_viewer_loading_size"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/iv_loading_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circular_white"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/iv_loading_text"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/play_offset_18"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        android:gravity="center"
        android:textColor="@color/Unify_Static_White"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_loading"
        app:typographyType="heading_2"
        tools:text="@string/play_buffer_reason_seller_side"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>