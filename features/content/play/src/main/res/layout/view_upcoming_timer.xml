<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/play_dms_N600">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_timer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_will_start_on"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"/>

    <com.tokopedia.unifycomponents.timer.TimerUnifySingle
        android:id="@+id/timer_upcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_timer_label"
        app:timer_unify_single_remainingDays="0"
        app:timer_unify_single_remainingHours="0"
        app:timer_unify_single_remainingMinutes="0"
        app:timer_unify_single_remainingSeconds="1"
        app:timer_unify_single_showClockIcon="true"
        app:timer_unify_single_variant="general"/>

</androidx.constraintlayout.widget.ConstraintLayout>