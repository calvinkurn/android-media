<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:background="@color/Unify_Static_Black"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    >

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_timebar_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:background="@drawable/bg_play_timebar_time"
        android:paddingStart="@dimen/spacing_lvl3"
        android:paddingTop="@dimen/spacing_lvl1"
        android:paddingEnd="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl1"
        android:textColor="@color/Unify_Static_Black"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/player_control"
        app:layout_constraintStart_toStartOf="@id/player_control"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        />

    <com.google.android.exoplayer2.ui.PlayerControlView
        android:id="@+id/player_control"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        app:controller_layout_id="@layout/layout_play_player_control"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_time_remaining"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:show_timeout="-1"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_time_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="1:12"
        />

</merge>