<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <com.tokopedia.play_common.view.RoundedConstraintLayout
        android:id="@+id/cl_tap_background"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/play_interactive_live_height"
        android:layout_marginTop="@dimen/play_offset_6"
        android:background="@drawable/bg_play_interactive"
        app:rcl_cornerRadius="@dimen/play_interactive_common_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fl_timer_tap"
        app:layout_constraintStart_toStartOf="@id/fl_timer_tap"
        >

        <com.tokopedia.play_common.view.RemoteImageView
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            app:cacheStrategy="data"
            app:imageUrl="https://images.tokopedia.net/img/android/content/play/ic_play_interactive_decor.png"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.6"
            />

    </com.tokopedia.play_common.view.RoundedConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_interactive_follow"
        android:layout_width="@dimen/play_interactive_tap_action"
        android:layout_height="@dimen/play_interactive_tap_action"
        android:layout_marginEnd="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:background="@drawable/bg_play_interactive_tap_action"
        app:layout_constraintBottom_toBottomOf="@id/cl_tap_background"
        app:layout_constraintEnd_toEndOf="@id/cl_tap_background"
        >

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_follow"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_gravity="center"
            app:icon_color_light_disabled="@color/Unify_Static_White"
            app:icon_color_light_enable="@color/Unify_Static_White"
            app:icon_color_night_disabled="@color/Unify_Static_White"
            app:icon_color_night_enable="@color/Unify_Static_White"
            app:icon_name="USER_ADD"
            />

    </FrameLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_confetti_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="@id/lottie_button_tap"
        app:layout_constraintEnd_toEndOf="@id/lottie_button_tap"
        app:layout_constraintStart_toStartOf="@id/lottie_button_tap"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_button_tap"
        android:layout_width="@dimen/play_interactive_tap_action"
        android:layout_height="@dimen/play_interactive_tap_action"
        android:layout_marginEnd="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/cl_tap_background"
        app:layout_constraintEnd_toEndOf="@id/cl_tap_background"
        />

    <FrameLayout
        android:id="@+id/fl_interactive_tap"
        android:layout_width="@dimen/play_interactive_tap_action"
        android:layout_height="@dimen/play_interactive_tap_action"
        android:layout_marginEnd="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:background="@drawable/bg_play_interactive_tap_action"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/cl_tap_background"
        app:layout_constraintEnd_toEndOf="@id/cl_tap_background"
        >

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_tap"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_gravity="center"
            app:icon_color_light_disabled="@color/Unify_Static_White"
            app:icon_color_light_enable="@color/Unify_Static_White"
            app:icon_color_night_disabled="@color/Unify_Static_White"
            app:icon_color_night_enable="@color/Unify_Static_White"
            app:icon_name="GIFT"
            />

    </FrameLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_lottie_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="lottie_button_tap, lottie_confetti_tap"
        android:visibility="invisible"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_tap_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:text="@string/play_interactive_tap_action_tap_text"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="@id/fl_timer_tap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cl_tap_background"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        />

    <FrameLayout
        android:id="@+id/fl_timer_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_play_interactive_tap_timer"
        app:layout_constraintBottom_toBottomOf="@id/cl_tap_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1"
        >

        <com.tokopedia.unifycomponents.timer.TimerUnifySingle
            android:id="@+id/timer_tap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:layout_marginEnd="@dimen/spacing_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl1"
            app:timer_unify_single_text="@string/play_interactive_live_timer_text"
            app:timer_unify_single_textWidth="wrap"
            app:timer_unify_single_type="second"
            app:timer_unify_single_variant="main"
            tools:layout_width="160dp"
            />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
