<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/unify_space_16">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_category_video"
        android:layout_width="48dp"
        android:layout_height="86dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_play_category_rank"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <include
        android:id="@+id/layout_live_badge"
        layout="@layout/layout_live_badge"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/unify_space_4"
        android:layout_marginStart="@dimen/unify_space_4"
        app:layout_constraintTop_toTopOf="@id/iv_category_video"
        app:layout_constraintStart_toStartOf="@id/iv_category_video"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_category_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_category_video"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="paragraph_3"
        tools:text="Diskon Gede- Gedean  Giveaway Bardi Camera! Diskon Gede- Gedean  Giveaway Bardi Camera!" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_category_creator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/unify_space_4"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tv_category_video_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_category_video_title"
        tools:srcCompat="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_category_video_creator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_4"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@+id/iv_category_creator"
        app:layout_constraintEnd_toEndOf="@+id/tv_category_video_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_category_creator"
        app:layout_constraintTop_toTopOf="@+id/iv_category_creator"
        app:layout_goneMarginStart="0dp"
        app:layout_goneMarginTop="20dp"
        app:typographyType="display_3"
        tools:text="Toko Mama Gigi" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_category_view"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/cm_dp_6"
        app:icon_color_light_disabled="@color/Unify_NN600"
        app:icon_color_light_enable="@color/Unify_NN600"
        app:icon_color_night_disabled="@color/Unify_NN600"
        app:icon_color_night_enable="@color/Unify_NN600"
        app:icon_name="VISIBILITY"
        app:layout_constraintStart_toStartOf="@+id/iv_category_creator"
        app:layout_constraintTop_toBottomOf="@+id/iv_category_creator"
        app:layout_goneMarginTop="20dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_category_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_4"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@+id/iv_category_view"
        app:layout_constraintStart_toEndOf="@+id/iv_category_view"
        app:layout_constraintTop_toBottomOf="@+id/iv_category_creator"
        app:layout_constraintVertical_bias="1.0"
        app:typographyType="small"
        tools:text="16.5rb" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_play_category_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/unify_space_8"
        app:layout_constraintEnd_toStartOf="@id/iv_category_video"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_category_video"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        tools:text="1." />
</androidx.constraintlayout.widget.ConstraintLayout>