<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_product_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/v_bottom_overlay">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_img_illustration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:srcCompat="@drawable/ic_product_search_not_found"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title_product_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:typographyType="heading_2"
            app:typographyWeight="bold"
            android:text="@string/play_product_empty_title"
            android:textColor="@color/Unify_N700_96"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_img_illustration" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_desc_product_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:typographyType="body_3"
            android:text="@string/play_product_empty_desc"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_product_empty" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_action_product_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_product_empty_action"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_product_empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>