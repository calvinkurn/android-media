<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/play_product_featured_placeholder_width"
    android:layout_height="@dimen/play_product_featured_height"
    android:background="@drawable/bg_play_product_featured"
    android:gravity="center"
    android:orientation="vertical"
    >

    <com.tokopedia.play.view.custom.ProductIconView
        android:id="@+id/ic_play_featured_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_check_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:text="@string/play_featured_product_check_product"
        app:typographyType="small"
        />

</LinearLayout>