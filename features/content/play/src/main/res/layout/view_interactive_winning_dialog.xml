<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/play_interactive_winning_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_play_engagement"
    >

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/bg_play_engagement_decor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl4"
        >

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl3"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:text="Selamat kamu pemenangnya!"
            android:textAlignment="center"
            android:textColor="@color/Unify_Static_White"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:text="Tunggu seller chat kamu untuk konfirmasi."
            android:textAlignment="center"
            android:textColor="@color/Unify_Static_White"
            app:typographyType="body_3"
            />

    </LinearLayout>

</FrameLayout>