<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <com.tokopedia.play_common.view.game.GameHeaderView
        android:id="@+id/header_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_top" />

    <com.tokopedia.play_common.view.RoundedLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/Unify_Background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/header_view"
        app:layout_constraintStart_toStartOf="@+id/header_view"
        app:layout_constraintTop_toBottomOf="@+id/header_view"
        app:layout_constraintVertical_bias="0.0"
        app:rll_bottomLeftRadius="@dimen/play_dp_12"
        app:rll_bottomRightRadius="@dimen/play_dp_12">

        <com.tokopedia.play_common.view.RoundedFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/play_offset_12"
            android:background="@color/Unify_Background"
            android:elevation="@dimen/spacing_lvl2"
            app:rfl_cornerRadius="@dimen/spacing_lvl5">

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/btn_interactive_retry"
                android:layout_width="@dimen/play_interactive_error_btn_size"
                android:layout_height="@dimen/play_interactive_error_btn_size"
                android:padding="@dimen/play_dp_12"
                app:icon_color_light_disabled="@color/Unify_GN500"
                app:icon_color_light_enable="@color/Unify_GN500"
                app:icon_color_night_disabled="@color/Unify_GN500"
                app:icon_color_night_enable="@color/Unify_GN500"
                app:icon_name="RELOAD" />
        </com.tokopedia.play_common.view.RoundedFrameLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_interactive_erro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/play_dp_12"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:gravity="center"
            android:text="@string/play_interactive_retry"
            android:textAlignment="center"
            android:textColor="@color/Unify_GN500"
            app:typographyType="heading_5" />
    </com.tokopedia.play_common.view.RoundedLinearLayout>
</merge>