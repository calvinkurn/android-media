<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/unify_space_16">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/cat_load_rank"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="4dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/cat_thumbnail"
        android:layout_width="48dp"
        android:layout_height="86dp"
        android:layout_marginStart="@dimen/play_dp_12"
        app:layout_constraintStart_toEndOf="@+id/cat_load_rank"
        app:layout_constraintTop_toTopOf="@+id/cat_load_rank"
        app:loader_corner_radius="4dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/cat_load_title"
        android:layout_width="120dp"
        android:layout_height="14dp"
        android:layout_marginStart="@dimen/unify_space_8"
        app:layout_constraintStart_toEndOf="@+id/cat_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/cat_thumbnail"
        app:loader_corner_radius="4dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/cat_load_partner"
        android:layout_width="40dp"
        android:layout_height="14dp"
        android:layout_marginTop="@dimen/unify_space_8"
        app:layout_constraintStart_toStartOf="@+id/cat_load_title"
        app:layout_constraintTop_toBottomOf="@+id/cat_load_title"
        app:loader_corner_radius="4dp"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>