<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.play_common.view.RoundedConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_play_interactive"
    app:rcl_cornerRadius="@dimen/play_interactive_common_radius"
    tools:layout_width="140dp"
    >

    <com.tokopedia.play_common.view.RemoteImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl0"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        app:cacheStrategy="data"
        app:imageUrl="https://images.tokopedia.net/img/android/content/play/ic_play_interactive_decor.png"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
    />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_gift"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/play_offset_6"
        android:layout_marginTop="@dimen/play_offset_10"
        app:icon_color_light_disabled="@color/Unify_Static_White"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_disabled="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="GIFT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_interactive_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginEnd="@dimen/play_offset_14"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_gift"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        tools:text="Giveaway Headset Wireless Xiaomi"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_interactive_follow"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:text="@string/play_interactive_prestart_follow_button"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_interactive_title"
        app:unifyButtonInvers="true"
        app:unifyButtonSize="micro"
        app:unifyButtonType="alternate"
        app:unifyButtonVariant="ghost"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_starting_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:text="@string/play_interactive_prestart_timer_text"
        android:textColor="@color/Unify_Static_White_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_interactive_follow"
        app:typographyType="small"
        />

    <com.tokopedia.unifycomponents.timer.TimerUnifySingle
        android:id="@+id/timer_prestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_starting_in"
        app:timer_unify_single_type="minute"
        app:timer_unify_single_variant="alternate"
        app:timer_unify_single_remainingSeconds="0"
        />

</com.tokopedia.play_common.view.RoundedConstraintLayout>