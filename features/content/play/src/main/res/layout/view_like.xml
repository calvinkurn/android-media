<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_like"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_height="match_parent"
    tools:layout_width="match_parent"
    >

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_total_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:inputType="textNoSuggestions"
        android:textAlignment="center"
        android:textColor="@color/Unify_Static_White"
        android:background="@drawable/bg_play_like_count"
        android:paddingTop="@dimen/spacing_lvl1"
        android:paddingBottom="@dimen/spacing_lvl1"
        android:paddingStart="@dimen/spacing_lvl3"
        android:paddingEnd="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        app:layout_constraintEnd_toEndOf="@id/animation_like"
        app:layout_constraintStart_toStartOf="@id/animation_like"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/animation_like"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="123"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_like"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_rawRes="@raw/anim_outline_spam_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total_likes"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>