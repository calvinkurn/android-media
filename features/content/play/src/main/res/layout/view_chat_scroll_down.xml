<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_chat_scroll"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:background="@drawable/bg_play_chat_scroll_down"
        app:icon_name="CHEVRON_DOWN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/iconunify_chevron_down"
        app:icon_color_light_enable="@color/Unify_NN600"
        app:icon_color_light_disabled="@color/Unify_NN600"
        app:icon_color_night_enable="@color/Unify_NN600"
        app:icon_color_night_disabled="@color/Unify_NN600" />

    <View
        android:id="@+id/v_indicator_red"
        android:layout_width="@dimen/layout_lvl1"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl1"
        android:background="@drawable/shape_play_red_dots"
        app:layout_constraintEnd_toEndOf="@id/iv_chat_scroll"
        app:layout_constraintTop_toTopOf="@id/iv_chat_scroll"
        tools:visibility="visible" />

</merge>