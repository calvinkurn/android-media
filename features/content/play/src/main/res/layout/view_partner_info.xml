<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:background="@color/play_dms_background"
    >

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:unify_image_type="circle"
        app:unify_image_placeholder="@color/play_dms_partner_icon_placeholder"
        />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_badge"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_10"
        app:unify_image_placeholder="@color/play_dms_partner_icon_placeholder"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_partner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_Static_White"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Rockbros Indonesia"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:minWidth="@dimen/play_follow_button_width"
        android:text="@string/play_follow"
        app:unifyButtonInvers="true"
        app:unifyButtonSize="micro"
        app:unifyButtonType="alternate"
        app:unifyButtonVariant="ghost"
        />

</LinearLayout>