<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <!--Add stroke-->
    <com.tokopedia.play_common.view.RoundedConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:rcl_cornerRadius="@dimen/layout_lvl1"
        tools:layout_width="match_parent"
        tools:background="@color/play_dms_N700">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_quiz_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:textColor="@color/Unify_N0"
            app:layout_constraintBottom_toBottomOf="@+id/iv_quiz_option"
            app:layout_constraintEnd_toStartOf="@+id/loader_quiz_option"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_quiz_option"
            app:layout_constraintTop_toTopOf="@+id/iv_quiz_option"
            app:typographyType="heading_5"
            app:typographyWeight="reguler"
            tools:text="Follow untuk ikut quiz" />

        <com.tokopedia.play_common.view.RoundedImageView
            android:id="@+id/iv_quiz_option"
            android:layout_width="@dimen/play_view_stats_info_height"
            android:layout_height="@dimen/play_view_stats_info_height"
            tools:src="@drawable/iconunify_format_bold"
            android:layout_marginTop="@dimen/play_offset_14"
            android:layout_marginBottom="@dimen/play_offset_14"
            android:layout_marginStart="@dimen/play_offset_14"
            tools:background="@color/Unify_YN300"
            android:padding="@dimen/spacing_lvl2"
            app:rImg_cornerRadius="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader_quiz_option"
            android:layout_width="21dp"
            android:layout_height="21dp"
            app:loader_type="circular"
            android:layout_marginEnd="@dimen/play_offset_14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_quiz_question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_quiz_question" />
    </com.tokopedia.play_common.view.RoundedConstraintLayout>
</merge>
