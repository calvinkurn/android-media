<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@drawable/bg_quiz_choice">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_quiz_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_quiz_option"
        app:layout_constraintEnd_toStartOf="@+id/loader_quiz_option"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_quiz_option"
        app:layout_constraintTop_toTopOf="@+id/iv_quiz_option"
        app:layout_constraintVertical_bias="0.0"
        app:typographyType="heading_5"
        app:typographyWeight="reguler"
        tools:text="Follow untuk ikut quiz"
        tools:textColor="@color/Unify_NN600" />

    <include
        android:id="@+id/iv_quiz_option"
        layout="@layout/item_quiz_choices_alphabet"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_quiz_option"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_quiz_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_quiz_question"
        app:loader_type="circular" />
</androidx.constraintlayout.widget.ConstraintLayout>