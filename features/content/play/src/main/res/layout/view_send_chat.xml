<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_chat_form"
    android:layout_width="@dimen/layout_lvl0"
    android:layout_height="@dimen/play_send_chat_height"
    android:background="@drawable/bg_play_chat_form"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_10"
    app:layout_goneMarginEnd="@dimen/spacing_lvl4"
    >

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/play_chat_placeholder"
        android:inputType="textNoSuggestions|textShortMessage"
        android:longClickable="false"
        android:textColor="@color/Neutral_N0"
        android:textColorHint="@color/play_chat_text"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_send"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/et_chat"
        app:layout_constraintStart_toEndOf="@id/et_chat"
        app:layout_constraintBottom_toBottomOf="@id/et_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_play_send_white"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>