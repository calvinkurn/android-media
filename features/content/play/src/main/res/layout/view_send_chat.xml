<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_chat_form"
    android:layout_width="@dimen/layout_lvl0"
    android:layout_height="@dimen/play_send_chat_height"
    android:background="@drawable/bg_play_chat_form"
    app:layout_goneMarginEnd="@dimen/spacing_lvl4"
    tools:layout_width="match_parent"
    tools:background="@color/play_dms_N700_32"
    >

    <com.tokopedia.play_common.view.PlayNoImageEditText
        android:id="@+id/et_chat"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:background="@null"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:hint="@string/play_chat_placeholder"
        android:inputType="textNoSuggestions|textShortMessage"
        android:longClickable="false"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl2"
        android:paddingRight="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_Static_White"
        android:textColorHint="@color/play_dms_chat_text"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_send"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/et_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_chat"
        app:layout_constraintTop_toTopOf="@id/et_chat"
        app:srcCompat="@drawable/ic_play_send_white"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>