<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.abstraction.base.view.widget.SwipeToRefresh xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_Background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.tokopedia.header.HeaderUnify
            android:id="@+id/header_profile"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="@dimen/unify_space_4"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:elevation="@dimen/unify_space_4"
            app:unify_header_is_show_back_button="true"
            app:unify_header_is_show_shadow="false"
            app:unify_header_transparent_mode="false" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/layout_lvl0">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/unify_space_48"
                app:layout_scrollFlags="scroll">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/unify_space_48"
                    android:background="@color/Unify_Background"
                    android:measureAllChildren="false"
                    android:paddingTop="@dimen/unify_space_8"
                    android:paddingBottom="@dimen/unify_space_16"
                    android:visibility="visible">

                    <View
                        android:id="@+id/view_profile_outer_ring"
                        android:layout_width="@dimen/up_live_circle_size"
                        android:layout_height="@dimen/up_live_circle_size"
                        android:background="@drawable/up_live_ring_bg"
                        android:visibility="invisible"
                        android:layout_marginStart="@dimen/unify_space_12"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.tokopedia.unifycomponents.ImageUnify
                        android:id="@+id/img_profile_image"
                        android:layout_width="@dimen/unify_space_64"
                        android:layout_height="@dimen/unify_space_64"
                        android:layout_marginTop="@dimen/unify_space_6"
                        android:layout_marginBottom="@dimen/unify_space_6"
                        app:layout_constraintBottom_toBottomOf="@+id/view_profile_outer_ring"
                        app:layout_constraintEnd_toEndOf="@+id/view_profile_outer_ring"
                        app:layout_constraintLeft_toLeftOf="@+id/view_profile_outer_ring"
                        app:layout_constraintRight_toRightOf="@+id/view_profile_outer_ring"
                        app:layout_constraintStart_toStartOf="@+id/view_profile_outer_ring"
                        app:layout_constraintTop_toTopOf="@+id/view_profile_outer_ring"
                        app:unify_image_type="circle" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_live"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/unify_space_64"
                        android:layout_marginStart="@dimen/unify_space_16"
                        android:background="@drawable/bg_up_live"
                        android:gravity="center"
                        android:paddingStart="@dimen/unify_space_4"
                        android:paddingLeft="@dimen/unify_space_2"
                        android:paddingEnd="@dimen/unify_space_4"
                        android:paddingRight="@dimen/unify_space_2"
                        android:text="@string/up_btn_text_live"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fontSize_lvl10"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="@+id/view_profile_outer_ring"
                        app:layout_constraintLeft_toLeftOf="@+id/view_profile_outer_ring"
                        app:layout_constraintRight_toRightOf="@+id/view_profile_outer_ring"
                        app:layout_constraintStart_toStartOf="@+id/view_profile_outer_ring"
                        app:layout_constraintTop_toTopOf="@+id/view_profile_outer_ring"
                        app:textAllCaps="true" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_content_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/Unify_NN950"
                        app:layout_constraintBottom_toTopOf="@+id/text_content_label"
                        app:layout_constraintEnd_toStartOf="@+id/text_follower_count"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toEndOf="@+id/view_profile_outer_ring"
                        app:layout_constraintTop_toTopOf="@+id/view_profile_outer_ring"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:typographyType="heading_4"
                        app:typographyWeight="bold"
                        tools:text="999" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_follower_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/Unify_NN950"
                        app:layout_constraintEnd_toStartOf="@+id/text_following_count"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toEndOf="@+id/text_content_count"
                        app:layout_constraintTop_toTopOf="@+id/text_content_count"
                        app:typographyType="heading_4"
                        app:typographyWeight="bold"
                        tools:text="999" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_following_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/unify_space_16"
                        android:gravity="center"
                        android:textColor="@color/Unify_NN950"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/text_follower_count"
                        app:layout_constraintTop_toTopOf="@+id/text_content_count"
                        app:typographyType="heading_4"
                        app:typographyWeight="bold"
                        tools:text="999" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_content_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/up_lb_post"
                        android:textColor="@color/Unify_NN600"
                        app:layout_constraintBottom_toBottomOf="@+id/view_profile_outer_ring"
                        app:layout_constraintEnd_toEndOf="@+id/text_content_count"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="@+id/text_content_count"
                        app:layout_constraintTop_toBottomOf="@+id/text_content_count"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:typographyType="body_2" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_follower_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/up_lb_follower"
                        android:textColor="@color/Unify_NN600"
                        app:layout_constraintEnd_toStartOf="@+id/text_following_label"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toEndOf="@+id/text_content_label"
                        app:layout_constraintTop_toBottomOf="@+id/text_follower_count"
                        app:layout_constraintTop_toTopOf="@+id/text_content_label"
                        app:typographyType="body_2" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_following_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/unify_space_16"
                        android:gravity="center"
                        android:text="@string/up_lb_following"
                        android:textColor="@color/Unify_NN600"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/text_follower_label"
                        app:layout_constraintTop_toBottomOf="@+id/text_following_count"
                        app:layout_constraintTop_toTopOf="@+id/text_content_label"
                        app:typographyType="body_2" />

                    <View android:layout_height="0dp"
                        android:layout_width="1dp"
                        android:background="#BFC9D9"
                        app:layout_constraintStart_toEndOf="@id/text_content_label"
                        app:layout_constraintEnd_toStartOf="@id/text_follower_label"
                        app:layout_constraintTop_toTopOf="@id/text_content_count"
                        app:layout_constraintBottom_toBottomOf="@id/text_content_label"/>

                    <View android:layout_height="0dp"
                        android:layout_width="1dp"
                        android:background="#BFC9D9"
                        app:layout_constraintStart_toEndOf="@id/text_follower_label"
                        app:layout_constraintEnd_toStartOf="@id/text_following_label"
                        app:layout_constraintTop_toTopOf="@id/text_content_count"
                        app:layout_constraintBottom_toBottomOf="@id/text_content_label"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_display_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/unify_space_12"
                        android:layout_marginTop="@dimen/unify_space_12"
                        android:textColor="@color/Unify_NN950"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_profile_outer_ring"
                        app:typographyType="heading_3"
                        app:typographyWeight="bold"
                        tools:text="John Doe" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/unify_space_12"
                        android:layout_marginTop="@dimen/cp_dp_2"
                        android:textColor="@color/Unify_NN600"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_display_name"
                        app:typographyType="body_2"
                        tools:text="john.doe" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_bio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/unify_space_4"
                        android:layout_marginStart="@dimen/unify_space_12"
                        android:layout_marginEnd="@dimen/unify_space_16"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:textColor="@color/Unify_NN950"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_user_name"
                        app:typographyType="body_2" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/text_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="@dimen/unify_space_12"
                        android:layout_marginEnd="@dimen/unify_space_16"
                        android:maxLines="3"
                        android:text="@string/up_link_see_more"
                        android:textColor="@color/Unify_GN500"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_bio"
                        app:typographyType="body_2"
                        app:typographyWeight="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_button"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginTop="@dimen/unify_space_16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_see_more"
                        android:orientation="vertical">

                    <com.tokopedia.unifycomponents.UnifyButton
                        android:id="@+id/btn_action_follow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Unify_NN300"
                        android:layout_marginStart="@dimen/unify_space_16"
                        android:layout_marginEnd="@dimen/unify_space_16"
                        app:unifyButtonSize="small"
                        app:unifyButtonVariant="text" />

                    <View android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="#BFC9D9"
                        android:layout_marginTop="@dimen/unify_space_16"
                        android:id="@+id/view_line"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <ViewFlipper
            android:id="@+id/vp_rv_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_button">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_lvl3"
                    android:layout_marginEnd="@dimen/spacing_lvl3"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/unify_space_8"
                    tools:listitem="@layout/up_item_user_post" />

            <include layout="@layout/up_shimmer_user_post" />

            <com.tokopedia.unifycomponents.LocalLoad
                android:id="@+id/global_error_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/unify_space_16"
                android:layout_marginRight="@dimen/unify_space_16"
                app:unify_local_load_description="@string/up_common_failed_desc"
                app:unify_local_load_title="@string/up_common_failed_title" />

            <include layout="@layout/up_layout_error_empty_user_post" />

        </ViewFlipper>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>