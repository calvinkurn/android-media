<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_wording_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/up_follow_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/unify_space_16"
        android:textColor="@color/Unify_NN950"
        app:typographyType="heading_4" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shop_recom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_8"
        android:paddingBottom="@dimen/user_profile_margin_8"
        app:layout_constraintTop_toBottomOf="@id/txt_wording_follow"
        tools:listitem="@layout/up_layout_shop_recommendation" />

    <include
        android:id="@+id/include_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/up_layout_error_empty_user_post"
        app:layout_constraintTop_toBottomOf="@id/rv_shop_recom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>