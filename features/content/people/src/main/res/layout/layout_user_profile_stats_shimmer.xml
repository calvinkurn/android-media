<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/text_content_count"
        android:layout_width="40dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toTopOf="@+id/text_content_label"
        app:layout_constraintEnd_toStartOf="@+id/text_follower_count"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/text_follower_count"
        android:layout_width="40dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toStartOf="@+id/text_following_count"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/text_content_count"
        app:layout_constraintTop_toTopOf="@+id/text_content_count"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/text_following_count"
        android:layout_width="40dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_follower_count"
        app:layout_constraintTop_toTopOf="@+id/text_content_count"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/text_content_label"
        android:layout_width="71dp"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/text_content_count"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/text_content_count"
        app:layout_constraintTop_toBottomOf="@+id/text_content_count"
        app:layout_constraintVertical_chainStyle="packed"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/text_follower_label"
        android:layout_width="71dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="@id/text_follower_count"
        app:layout_constraintStart_toStartOf="@id/text_follower_count"
        app:layout_constraintTop_toTopOf="@+id/text_content_label"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/text_following_label"
        android:layout_width="71dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="@id/text_following_count"
        app:layout_constraintStart_toStartOf="@id/text_following_count"
        app:layout_constraintTop_toTopOf="@+id/text_content_label"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>