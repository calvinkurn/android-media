<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cp_dp_284"
    android:background="@color/Unify_Background">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_banner"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="@dimen/unify_space_0"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_reminder"
        android:layout_width="@dimen/unify_space_28"
        android:layout_height="@dimen/unify_space_28"
        android:layout_marginTop="@dimen/unify_space_8"
        android:layout_marginEnd="@dimen/unify_space_8"
        android:background="@drawable/bg_up_reminder"
        android:padding="@dimen/unify_space_6"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconunify_bell" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/unify_space_8"
        android:background="@drawable/bg_up_live"
        android:gravity="center"
        android:paddingStart="@dimen/unify_space_6"
        android:paddingLeft="@dimen/unify_space_6"
        android:paddingTop="@dimen/unify_space_6"
        android:paddingEnd="@dimen/unify_space_6"
        android:paddingRight="@dimen/unify_space_6"
        android:paddingBottom="@dimen/unify_space_4"
        android:text="@string/up_btn_text_live"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="true"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_live_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/unify_space_8"
        android:background="@drawable/cp_bg_totalview"
        android:drawableStart="@drawable/ic_play_eye_white"
        android:drawablePadding="@dimen/unify_space_4"
        android:padding="@dimen/unify_space_4"
        android:textColor="@color/Unify_N0"
        app:barrierAllowsGoneWidgets="true"
        app:layout_constraintStart_toEndOf="@+id/text_live"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/text_special_label"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/unify_space_8"
        app:labelType="highlight_dark_green"
        app:layout_constraintBottom_toTopOf="@+id/text_date"
        app:layout_constraintLeft_toLeftOf="@+id/text_user_name"
        app:layout_constraintStart_toStartOf="@+id/text_user_name"
        tools:text="Kupon 30%" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_date"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_8"
        android:textColor="@color/Unify_Y300"
        app:layout_constraintBottom_toTopOf="@+id/text_display_name"
        app:layout_constraintEnd_toEndOf="@+id/text_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/text_user_name"
        app:layout_constraintRight_toRightOf="@+id/text_user_name"
        app:layout_constraintStart_toStartOf="@+id/text_user_name"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_display_name"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_8"
        android:textColor="@color/Unify_N0"
        app:layout_constraintBottom_toTopOf="@+id/text_user_name"
        app:layout_constraintEnd_toEndOf="@+id/text_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/text_user_name"
        app:layout_constraintRight_toRightOf="@+id/text_user_name"
        app:layout_constraintStart_toStartOf="@+id/text_user_name"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_user_name"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/unify_space_2"
        android:layout_marginEnd="@dimen/unify_space_8"
        android:layout_marginBottom="@dimen/unify_space_8"
        android:textColor="@color/Unify_N0_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_default="spread"
        app:typographyType="body_3"
        tools:text="john.doe" />

</androidx.constraintlayout.widget.ConstraintLayout>
