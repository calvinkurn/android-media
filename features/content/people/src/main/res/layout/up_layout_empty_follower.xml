<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/unify_space_16">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/img_empty"
        android:layout_width="@dimen/unify_space_48"
        android:layout_height="@dimen/unify_space_48"
        android:layout_marginTop="@dimen/user_profile_follow_error_page_top_margin"
        app:icon_name="USER"
        app:icon_color_light_enable="@color/Unify_Static_Black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_error_empty_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/unify_space_4"
        android:gravity="center"
        android:text="@string/up_empty_page_follower_title"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_empty"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_error_empty_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_2"
        android:gravity="center"
        android:text="@string/up_empty_page_desc"
        android:textColor="@color/Unify_NN600"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_error_empty_title"
        app:typographyType="body_2" />
</androidx.constraintlayout.widget.ConstraintLayout>