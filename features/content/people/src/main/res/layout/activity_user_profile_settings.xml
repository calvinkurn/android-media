<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/header_unify"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:icon_name="STAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_unify" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/up_profile_settings_review_text"
        app:layout_constraintEnd_toStartOf="@id/switch_review"
        app:layout_constraintStart_toEndOf="@id/ic_review"
        app:layout_constraintTop_toTopOf="@id/ic_review"
        app:layout_constraintBottom_toBottomOf="@id/ic_review"
        app:typographyType="paragraph_2" />

    <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
        android:id="@+id/switch_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ic_review"
        app:layout_constraintTop_toTopOf="@id/ic_review" />

</androidx.constraintlayout.widget.ConstraintLayout>