<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_content_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toTopOf="@+id/text_content_label"
        app:layout_constraintEnd_toStartOf="@+id/text_follower_count"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="999" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_follower_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toStartOf="@+id/text_following_count"
        app:layout_constraintStart_toEndOf="@+id/text_content_count"
        app:layout_constraintTop_toTopOf="@+id/text_content_count"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="999" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_following_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_follower_count"
        app:layout_constraintTop_toTopOf="@+id/text_content_count"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="999" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_content_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/up_lb_post"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@+id/text_content_count"
        app:layout_constraintStart_toStartOf="@+id/text_content_count"
        app:layout_constraintTop_toBottomOf="@+id/text_content_count"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_follower_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/up_lb_follower"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toStartOf="@+id/text_following_label"
        app:layout_constraintStart_toEndOf="@+id/text_content_label"
        app:layout_constraintTop_toBottomOf="@+id/text_follower_count"
        app:layout_constraintTop_toTopOf="@+id/text_content_label"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_following_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/up_lb_following"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_follower_label"
        app:layout_constraintTop_toBottomOf="@+id/text_following_count"
        app:layout_constraintTop_toTopOf="@+id/text_content_label"
        app:typographyType="body_2" />

    <View
        android:layout_width="@dimen/user_profile_dp_1"
        android:layout_height="@dimen/unify_space_32"
        android:background="@color/Unify_NN300"
        app:layout_constraintBottom_toBottomOf="@id/text_content_label"
        app:layout_constraintEnd_toStartOf="@id/text_follower_label"
        app:layout_constraintStart_toEndOf="@id/text_content_label"
        app:layout_constraintTop_toTopOf="@id/text_content_count" />

    <View
        android:layout_width="@dimen/user_profile_dp_1"
        android:layout_height="@dimen/unify_space_32"
        android:background="@color/Unify_NN300"
        app:layout_constraintBottom_toBottomOf="@id/text_content_label"
        app:layout_constraintEnd_toStartOf="@id/text_following_label"
        app:layout_constraintStart_toEndOf="@id/text_follower_label"
        app:layout_constraintTop_toTopOf="@id/text_content_count" />

</androidx.constraintlayout.widget.ConstraintLayout>