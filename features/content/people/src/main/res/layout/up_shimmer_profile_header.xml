<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/unify_space_24">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify1"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        app:loader_type="rect"
        app:loader_corner_radius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify2"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/dp_12"
        app:loader_type="line"
        app:loader_corner_radius="10dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify1"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify3"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/dp_12"
        app:loader_type="line"
        app:loader_corner_radius="20dp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify2"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify4"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="@dimen/dp_12"
        app:loader_type="rect"
        app:loader_corner_radius="10dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify3"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnify5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/dp_16"
        app:loader_type="rect"
        app:loader_corner_radius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify4"/>

    <LinearLayout
        android:id="@+id/lyLoaderUnify1"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderUnify5">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:loader_type="rect"
            app:loader_corner_radius="10dp"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            app:loader_type="rect"
            app:loader_corner_radius="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyLoaderUnify2"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lyLoaderUnify1">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:loader_type="rect"
            app:loader_corner_radius="10dp" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loaderUnify9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            app:loader_type="rect"
            app:loader_corner_radius="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>