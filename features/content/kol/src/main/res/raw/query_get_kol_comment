{
  get_user_post_comment(idPost: $idPost, cursor: $cursor, limit: $limit) {
    postKol {
      id
      headerTitle
      description
      commentCount
      likeCount
      isLiked
      isFollowed
      userName
      userPhoto
      userId
      userInfo
      userUrl
      createTime
      showComment
      content {
        imageurl
        tags {
          id
          type
          link
          price
          url
          caption
        }
      }
    }
    comments {
      id
      userID
      userName
      userPhoto
      isKol
      isCommentOwner
      create_time
      comment
    }
    lastCursor
    error
  }
}
