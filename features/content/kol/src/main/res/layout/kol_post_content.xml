<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5">

    <com.tokopedia.affiliatecommon.view.widget.WrapContentViewPager
        android:id="@+id/imageViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageViewPager"
        android:layout_marginBottom="@dimen/dp_4"
        app:tabBackground="@drawable/kol_tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageViewPager"
        android:layout_alignStart="@id/imageViewPager"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_kol_circle_white"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/dp_8"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_10"
        android:textStyle="normal"
        android:visibility="gone"
        tools:text="Periode Komisi telah berakhir"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/tooltip_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewPager"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:ignore="RtlSymmetry"
            tools:text="Kunjungi Toko" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/addImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_kol_rounded_white"
            android:elevation="@dimen/dp_0"
            android:fontFamily="sans-serif-medium"
            android:foreground="?android:attr/selectableItemBackground"
            android:lineSpacingExtra="4sp"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:text="@string/kol_add_photo"
            android:textAllCaps="false"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            android:visibility="gone"
            tools:targetApi="lollipop"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:id="@+id/bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/tooltip_area"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>