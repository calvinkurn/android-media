<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_16">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/avatars"/>
    
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/favorite"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        tools:srcCompat="@drawable/ic_wishlist_checked"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tokopedia.design.component.UnifyButton
        android:id="@+id/button_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dp_64"
        android:textAllCaps="false"
        app:btnSize="micro"
        app:buttonType="transaction"
        app:buttonVariant="filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/kol_action_like" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Jaket semi kulit paaaaaaaa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/picture"
        app:layout_constraintLeft_toRightOf="@+id/picture"
        app:layout_constraintEnd_toStartOf="@+id/button_action"
        app:layout_constraintRight_toLeftOf="@+id/button_action"
        app:layout_constraintBottom_toTopOf="@+id/original_price"
        app:layout_constraintVertical_chainStyle="packed"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/original_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_44"
        android:singleLine="true"
        android:ellipsize="end"
        android:visibility="gone"
        app:typographyType="small"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintRight_toRightOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/price"
        tools:text="Rp150.000"
        tools:visibility="visible"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Yellow_Y500"
        android:singleLine="true"
        android:ellipsize="end"
        app:typographyType="heading_5"
        app:layout_goneMarginTop="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintRight_toRightOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/original_price"
        app:layout_constraintBottom_toTopOf="@+id/rating"
        tools:text="Rp150.000"/>

    <RatingBar
        style="@style/RatingBar.Small"
        android:id="@+id/rating"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:numStars="5"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintRight_toRightOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        tools:rating="4"
        tools:visibility="visible"/>

</android.support.constraint.ConstraintLayout>