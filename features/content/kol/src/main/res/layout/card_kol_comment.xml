<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout">

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            tools:src="@tools:sample/avatars"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/badge"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toRightOf="@id/avatar"
            android:layout_toEndOf="@id/avatar"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_14"
            android:layout_toEndOf="@id/avatar"
            android:layout_toRightOf="@id/avatar"
            tools:text="      Nisie ih produknya kurang joss. Naik kereta api tut tut tut. Siapa hendak turun. Ke bandnung, surabaya. Bolehlah naik dengan percuma hahaha."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/comment"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/avatar"
            android:layout_toRightOf="@id/avatar">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/black_38"
                android:textSize="@dimen/sp_11"
                android:textStyle="normal"
                tools:text="20 Menit"/>

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:unifyButtonSize="micro"
                app:unifyButtonVariant="text"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="@string/kol_reply"/>

        </LinearLayout>

    </RelativeLayout>
</merge>