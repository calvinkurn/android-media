<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/base_view">

    <View
        android:id="@+id/top_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kol_post_shadow_size"
        android:visibility="gone"
        android:background="@drawable/card_shadow_bottom"/>

    <FrameLayout
        android:id="@+id/container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shadow_top_bottom"
        android:orientation="vertical">

        <com.tokopedia.kol.feature.post.view.widget.BaseKolView
            android:id="@+id/base_kol_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</LinearLayout>