<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_margin="@dimen/dp_15"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_64"
            android:layout_marginRight="@dimen/dp_64"
            android:textColor="@color/Neutral_N700_96"
            app:typographyWeight="bold"
            app:typographyType="body_2"
            tools:text="Kemas Dwisatria R"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_64"
            android:layout_marginRight="@dimen/dp_64"
            android:textColor="@color/Neutral_N700_68"
            app:typographyType="body_3"
            tools:text="Kemas Acil"/>

    </LinearLayout>

</LinearLayout>