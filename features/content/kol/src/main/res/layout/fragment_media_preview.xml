<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N700">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlay_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/Unify_N700"
        android:alpha="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/action_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_action_back"
            app:tint="@color/Unify_N0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/authorImage"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_circle_gray_border"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/action_back"
            app:layout_constraintStart_toEndOf="@+id/action_back"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/authorBadge"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/authorImage"
            app:layout_constraintLeft_toRightOf="@+id/authorImage"
            app:layout_constraintTop_toTopOf="@+id/authorTitle"
            app:layout_constraintBottom_toBottomOf="@+id/authorTitle"
            tools:src="@tools:sample/avatars"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/authorTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N0"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_goneMarginRight="16dp"
            app:layout_goneMarginEnd="16dp"
            app:typographyType="heading_4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/authorBadge"
            app:layout_constraintStart_toEndOf="@+id/authorBadge"
            app:layout_constraintRight_toLeftOf="@+id/action_more"
            app:layout_constraintEnd_toStartOf="@+id/action_more"
            app:layout_constraintBottom_toTopOf="@+id/authorSubtitile"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Febrian Putra Muhammad Ilham Jamaludin Andhika Kuma Djaffri Febby Mulia"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/authorSubtitile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N0"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:typographyType="body_3"
            app:layout_constraintTop_toBottomOf="@+id/authorTitle"
            app:layout_constraintStart_toEndOf="@+id/authorImage"
            app:layout_constraintLeft_toRightOf="@+id/authorImage"
            app:layout_constraintEnd_toEndOf="@+id/authorTitle"
            app:layout_constraintRight_toRightOf="@+id/authorTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="12 October pukul 13.55 2018 akhir kiamat semua dunia akan musnah"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/action_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/ic_three_dots_more_menu"
            app:tint="@color/Unify_N0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N0"
        android:background="@drawable/bg_kol_round_stroke_white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:paddingLeft="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overlay_toolbar"
        tools:text="1 dari 2"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/media_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pager_indicator"
        app:layout_constraintBottom_toTopOf="@+id/overlay_tags"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView android:id="@+id/action_prev"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:scaleX="-1"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_kol_arrow_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/media_pager"
        app:layout_constraintBottom_toBottomOf="@+id/media_pager"
        android:contentDescription="@string/kol_prev_image_content_desc" />

    <ImageView android:id="@+id/action_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_kol_arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/media_pager"
        app:layout_constraintBottom_toBottomOf="@+id/media_pager"
        android:contentDescription="@string/kol_next_image_content_desc" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlay_tags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/Unify_N700"
        android:alpha="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tag_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/button_tag_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/button_tag_action"
            tools:src="@tools:sample/avatars"
            tools:visibility="visible"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tag_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N0"
            android:lineSpacingExtra="@dimen/spacing_lvl2"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_goneMarginStart="0dp"
            app:layout_goneMarginLeft="0dp"
            app:typographyType="heading_5"
            app:layout_constraintTop_toTopOf="@+id/button_tag_action"
            app:layout_constraintStart_toEndOf="@+id/tag_picture"
            app:layout_constraintLeft_toRightOf="@+id/tag_picture"
            app:layout_constraintBottom_toTopOf="@+id/tag_rating"
            app:layout_constraintEnd_toStartOf="@+id/action_favorite"
            app:layout_constraintRight_toLeftOf="@+id/action_favorite"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Rp10.000.000"/>

        <RatingBar
            style="@style/RatingBar.Small"
            android:id="@+id/tag_rating"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:numStars="5"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tag_title"
            app:layout_constraintStart_toStartOf="@+id/tag_title"
            app:layout_constraintLeft_toLeftOf="@+id/tag_title"
            app:layout_constraintEnd_toEndOf="@+id/tag_title"
            app:layout_constraintRight_toRightOf="@+id/tag_title"
            app:layout_constraintBottom_toTopOf="@+id/tag_count"
            app:layout_constraintHorizontal_bias="0"
            tools:rating="4"
            tools:visibility="visible"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tag_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:lineSpacingExtra="@dimen/sp_4"
            android:textColor="@color/Unify_N0_68"
            android:layout_marginTop="4dp"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            app:layout_constraintTop_toBottomOf="@+id/tag_rating"
            app:layout_constraintStart_toStartOf="@+id/tag_title"
            app:layout_constraintLeft_toLeftOf="@+id/tag_title"
            app:layout_constraintEnd_toEndOf="@+id/tag_title"
            app:layout_constraintRight_toRightOf="@+id/tag_title"
            app:layout_constraintBottom_toBottomOf="@+id/button_tag_action"
            tools:text="17 barang"
            tools:visibility="visible"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_tag_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/dp_28"
            android:minWidth="@dimen/dp_85"
            android:textAllCaps="false"
            android:visibility="gone"
            app:unifyButtonSize="small"
            app:unifyButtonType="main"
            app:unifyButtonVariant="filled"
            app:layout_constraintBottom_toTopOf="@+id/icon_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/label_see_all"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/action_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_wishlist_checked"
            app:layout_constraintTop_toTopOf="@+id/button_tag_action"
            app:layout_constraintBottom_toBottomOf="@+id/button_tag_action"
            app:layout_constraintEnd_toStartOf="@+id/button_tag_action"
            app:layout_constraintRight_toLeftOf="@+id/button_tag_action"
            tools:visibility="visible"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/ic_thumb_white"
            app:tint="@color/Unify_N0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N0"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="@string/kol_action_like"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            app:layout_constraintTop_toTopOf="@+id/icon_thumb"
            app:layout_constraintStart_toEndOf="@+id/icon_thumb"
            app:layout_constraintLeft_toRightOf="@+id/icon_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/icon_thumb"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="icon_thumb,label_like"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/kol_ic_comment"
            app:tint="@color/Unify_N0"
            app:layout_constraintTop_toTopOf="@+id/icon_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/icon_thumb"
            app:layout_constraintStart_toEndOf="@+id/label_like"
            app:layout_constraintLeft_toRightOf="@+id/label_like"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N0"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="@string/kol_action_comment"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            app:layout_constraintTop_toTopOf="@+id/icon_thumb"
            app:layout_constraintStart_toEndOf="@+id/icon_comment"
            app:layout_constraintLeft_toRightOf="@+id/icon_comment"
            app:layout_constraintBottom_toBottomOf="@+id/icon_thumb"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="icon_comment,label_comment"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/ic_share_white"
            app:layout_constraintTop_toTopOf="@+id/icon_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/icon_thumb"
            app:layout_constraintStart_toEndOf="@+id/label_comment"
            app:layout_constraintLeft_toRightOf="@+id/label_comment"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N0"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="@string/kol_action_share"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            app:layout_constraintTop_toTopOf="@+id/icon_thumb"
            app:layout_constraintStart_toEndOf="@+id/icon_share"
            app:layout_constraintLeft_toRightOf="@+id/icon_share"
            app:layout_constraintBottom_toBottomOf="@+id/icon_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="icon_share,label_share"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>