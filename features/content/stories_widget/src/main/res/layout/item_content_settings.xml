<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_content_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_content_settings"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="heading_5"
        android:id="@+id/tv_content_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:lineSpacingExtra="@dimen/sp_6"
        android:text="@string/stories_settings_item_header"
        android:textColor="@color/Unify_NN950_96"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_content_settings"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="body_3"
        android:id="@+id/tv_edit_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:lineSpacingExtra="@dimen/sp_6"
        android:text="@string/stories_settings_item_body"
        android:textColor="@color/Unify_NN950_96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content_settings" />
</androidx.constraintlayout.widget.ConstraintLayout>