<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_1"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_margin="@dimen/dp_4"
    tools:ignore="PrivateResource">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/post_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"
            tools:srcCompat="@tools:sample/avatars"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/badge"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_margin="@dimen/dp_8"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            tools:visibility="visible"
            tools:ignore="ContentDescription" />
        
        <ImageView
            android:id="@+id/creator_img"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/creator_name"
            app:layout_constraintBottom_toBottomOf="@+id/creator_name"
            tools:srcCompat="@tools:sample/avatars" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/creator_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N700_96"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:ellipsize="end"
            android:singleLine="true"
            app:typographyWeight="bold"
            app:typographyType="heading_6"
            app:layout_constraintTop_toBottomOf="@+id/post_thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/creator_img"
            app:layout_constraintStart_toEndOf="@+id/creator_img"
            tools:text="@tools:sample/full_names" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/post_descr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N700_68"
            android:lineSpacingExtra="@dimen/sp_4"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_12"
            android:ellipsize="end"
            android:lines="2"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            app:layout_constraintTop_toBottomOf="@+id/creator_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@tools:sample/lorem/random" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>