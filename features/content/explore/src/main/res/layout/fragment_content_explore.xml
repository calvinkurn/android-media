<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/app_bar_layout"
        android:visibility="gone">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_bottom"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tab_feed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/dp_16"
                    android:textColor="@color/font_black_disabled_38"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/title_my_feed" />

                <TextView
                    android:id="@+id/tab_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/dp_16"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/tab_feed"
                    android:text="@string/title_explore" />

                <View
                    android:layout_width="@dimen/tab_explore_indicator"
                    android:layout_height="@dimen/dp_3"
                    android:background="@color/tkpd_main_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tab_explore"
                    app:layout_constraintStart_toStartOf="@id/tab_explore" />
            </android.support.constraint.ConstraintLayout>

            <com.tokopedia.design.text.SearchInputView
                android:id="@+id/search_inspiration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-8dp"
                android:fitsSystemWindows="true"
                android:visibility="gone"
                app:siv_search_hint="@string/search_your_inspiration" />

        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/explore_category_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingTop="@dimen/dp_16"
            android:orientation="horizontal"
            tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:itemCount="2"
            tools:listitem="@layout/item_explore_tag" />

    </android.support.design.widget.AppBarLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/explore_image_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

</android.support.design.widget.CoordinatorLayout>