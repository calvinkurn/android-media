<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16">

            <com.tokopedia.affiliate.common.widget.ClearFocusEditText
                android:id="@+id/caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif"
                android:gravity="top"
                android:hint="@string/af_caption_hint"
                android:singleLine="false"
                android:maxLength="2000"
                android:scrollbars="vertical"
                android:textColor="@color/black_54"
                android:textCursorDrawable="@color/black"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.tokopedia.feedcomponent.view.widget.FeedMultipleImageView
                android:id="@+id/media_attachment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/caption"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_title_product_attachment"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:text="@string/af_title_header_product_attachment"
                android:layout_marginTop="@dimen/dp_12"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_goneMarginTop="@dimen/dp_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/media_attachment"/>
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/product_attachment"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_86"
                android:layout_marginTop="@dimen/dp_8"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/label_title_product_attachment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout android:id="@+id/layout_default_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:background="@drawable/card_shadow_top"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_captions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/action_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:orientation="horizontal"
        android:background="@drawable/card_shadow_top"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:gravity="center_vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_add_product"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/ic_plus_add"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_add_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_weight="1"
            android:textColor="@color/ae000000"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            android:text="@string/label_add_product"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_af_pick_media"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/add_sticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:typographyType="heading_4"
            android:text="@string/label_add_sticker"
            android:textColor="@color/c45000000"
            android:visibility="gone"
            tools:visibility="visible"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/add_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_af_add_voucher"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:visibility="gone"
            tools:visibility="visible" />


    </LinearLayout>

</LinearLayout>