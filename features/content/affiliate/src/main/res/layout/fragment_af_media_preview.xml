<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mediaContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dp_8"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/dp_8"
                android:visibility="gone"
                tools:visibility="visible"
                app:srcCompat="@drawable/ic_video_play_button" />

            <com.tokopedia.design.viewpager.WrapContentViewPager
                android:id="@+id/mediaViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@+id/mediaContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tabBackground="@drawable/affiliate_tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <ImageView
            android:id="@+id/deleteMediaBtn"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@drawable/ic_system_action_delete_grayscale_32"
            app:layout_constraintEnd_toEndOf="@+id/mediaContainer"
            app:layout_constraintTop_toTopOf="@+id/mediaContainer" />

        <TextView
            android:id="@+id/mainImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:lineSpacingExtra="6sp"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:text="@string/af_set_main_image"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@+id/mainImageIcon"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mediaContainer"
            tools:textColor="@color/black_38" />

        <ImageView
            android:id="@+id/mainImageIcon"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/ic_af_check_gray"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/mainImageText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mainImageText"
            app:layout_constraintTop_toTopOf="@+id/mainImageText"
            tools:visibility="visible" />

        <View
            android:id="@+id/mediaSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_button_border_outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainImageText" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/relatedProductRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mediaSeparator"
            app:reverseLayout="false"
            tools:listitem="@layout/item_af_related_product" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>