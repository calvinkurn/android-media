<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_2"
    app:cardCornerRadius="@dimen/dp_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_24"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/clr_f531353b"
                app:typographyType="body_3"
                tools:text="21 Agustus 2018 pukul 22.08" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/collapseBtn"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_2"
                android:tint="@color/Neutral_N200"
                app:srcCompat="@drawable/ic_arrow_up"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/incomeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/af_commission_income"
                android:textColor="@color/clr_f531353b"
                app:typographyType="body_3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/incomeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black_54"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="Rp 5.000" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/incomeInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:fontFamily="sans-serif-light"
            android:text="@string/af_see_invoice"
            android:textColor="@color/Green_G500"
            android:visibility="gone"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/feeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/af_text_tokopedia_service_fee"
                android:textColor="@color/clr_f531353b"
                app:typographyType="body_3" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/feeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black_54"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="- Rp 2.000" />

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/feeInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_24"
            android:fontFamily="sans-serif-light"
            android:text="@string/af_see_invoice"
            android:textColor="@color/Green_G500"
            android:visibility="gone"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/af_commission_received"
                android:textColor="@color/clr_f531353b"
                app:typographyType="heading_5" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/totalCommission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/af_commission_blue"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="Rp 3.000" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>