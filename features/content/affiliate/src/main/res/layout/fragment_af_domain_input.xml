<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_16">

    <View
        android:id="@+id/spaceTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceTop"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="9sp"
        android:text="@string/af_make_by_me_profile"
        android:textColor="@color/black_70"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/avatar" />

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/wrapper_total_withdrawal"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-4dp"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="@dimen/dp_16"
        android:hint="@string/af_type_username"
        android:textColorHint="@color/black_56"
        app:layout_constraintTop_toBottomOf="@id/title">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/total_withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/sp_16" />
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <TextView
        android:id="@+id/termsAndCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4sp"
        android:text="@string/af_agree_terms"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.tokopedia.design.component.ButtonCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="@string/af_save"
        app:buttonCompatSize="big"
        app:buttonCompatType="disable"
        app:layout_constraintBottom_toTopOf="@id/termsAndCondition" />
</android.support.constraint.ConstraintLayout>