<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/layout_saldo"
                    android:background="@drawable/bg_saldo"
                    android:layout_width="match_parent"
                    android:padding="@dimen/dp_16"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/sp_32"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            tools:text="Rp 135.000"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_marginTop="@dimen/dp_8"
                            android:textSize="@dimen/sp_14"
                            android:fontFamily="sans-serif"
                            android:text="@string/title_dashboard_saldo"/>

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_date"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_70">

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/black_12"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_18">

                    <LinearLayout
                        android:id="@+id/layout_profile_seen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_password_hint_hidden_eye_opened"
                            />

                        <TextView
                            android:id="@+id/tv_profile_seen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/font_black_disabled_38"
                            android:text="@string/title_profil_dilihat"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_product_clicked"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_password_hint_hidden_eye_opened"
                            />

                        <TextView
                            android:id="@+id/tv_product_clicked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/font_black_disabled_38"
                            android:text="@string/title_profil_dilihat"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_product_bought"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_password_hint_hidden_eye_opened"
                            />

                        <TextView
                            android:id="@+id/tv_product_bought"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/font_black_disabled_38"
                            android:text="@string/title_profil_dilihat"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_16"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/item_recommendation_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/tv_recommendation_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_100"
            android:minHeight="@dimen/dp_40"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="jatah tersisaa sdadaadad"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            />
    </android.support.v7.widget.CardView>

</RelativeLayout>
