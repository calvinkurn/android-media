<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_8">

    <com.tokopedia.design.image.SquareImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_50"
        android:scaleType="centerCrop"
        tools:background="@drawable/ic_byme"
        android:layout_alignParentTop="true"/>

    <FrameLayout
        android:layout_alignParentRight="true"
        android:id="@+id/iv_byme"
        android:background="@drawable/bg_byme"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center"
            android:src="@drawable/ic_byme"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_image"
        android:textSize="@dimen/sp_14"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_primary_70"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_8"
        tools:text="default affiliate title"/>

    <TextView
        android:id="@+id/tv_commission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:textSize="@dimen/sp_14"
        android:fontFamily="sans-serif"
        android:textColor="@color/color_ongoing_text"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="default affiliate title"/>

</RelativeLayout>