<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_total_saldo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:drawableStart="@drawable/ic_saldo_tokopedia"
                android:drawableLeft="@drawable/ic_saldo_tokopedia"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="@string/total_active_balance"
                android:textColor="@color/Neutral_N700_68"
                app:typographyType="small" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_total_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_total_saldo_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:textColor="@color/black_70"
                app:typographyType="body_1"
                app:typographyWeight="bold"
                tools:text="Rp110.000" />

            <View
                android:id="@+id/view_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/tv_total_saldo"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/black_12" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_affiliate_income_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_separator"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/affiliate_income"
                android:textColor="@color/Neutral_N700_68"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_affiliate_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_separator"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_16"
                android:textColor="@color/Neutral_N700_68"
                app:typographyType="body_3"
                tools:text="Rp10.000" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/shareBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_btn_green"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/check_balance_detail"
            android:textColor="@color/WhiteText"
            app:typographyType="heading_5"
            tools:text="Cek Detail Saldo" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_16"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_16">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_posted_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:drawableStart="@drawable/ic_image_dark"
                android:drawableLeft="@drawable/ic_image_dark"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:textColor="@color/black_70"
                app:typographyType="heading_6"
                tools:text="Produk Dipost (1)" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_posted_product"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="@string/see_all"
                android:textColor="@color/Green_G500"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

            <View
                android:id="@+id/view_separator_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/tv_posted_product"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/black_12" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_total_viewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_separator_2"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableStart="@drawable/ic_see_grey"
                android:drawableLeft="@drawable/ic_see_grey"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:textColor="@color/Neutral_N700_68"
                app:typographyType="body_3"
                tools:text="38 Kali Dikunjungi" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_total_clicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_separator_2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_16"
                android:drawableStart="@drawable/ic_af_dashboard_click_grey"
                android:drawableLeft="@drawable/ic_af_dashboard_click_grey"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:textColor="@color/Neutral_N700_68"
                app:typographyType="body_3"
                tools:text="27 Klik Produk" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="@string/curated_product_history"
        android:textColor="@color/black_70"
        app:typographyType="heading_3" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_date"
                    android:textColor="@color/Neutral_N700_68"
                    app:typographyType="small" />

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:drawableStart="@drawable/ic_calendar_blank"
                    android:drawableLeft="@drawable/ic_calendar_blank"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="@string/choose_date"
                    android:textColor="@color/Neutral_N700_20"
                    app:typographyType="body_2" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@color/Neutral_N75" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_date"
                    android:textColor="@color/Neutral_N700_68"
                    app:typographyType="small" />

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:drawableStart="@drawable/ic_calendar_blank"
                    android:drawableLeft="@drawable/ic_calendar_blank"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="@string/choose_date"
                    android:textColor="@color/Neutral_N700_20"
                    app:typographyType="body_2" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@color/Neutral_N75" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_14"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/curated_from_post"
            android:textAlignment="center"
            app:typographyType="heading_5" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/curated_from_traffic"
            android:textAlignment="center"
            app:typographyType="heading_5" />

    </LinearLayout>

</LinearLayout>