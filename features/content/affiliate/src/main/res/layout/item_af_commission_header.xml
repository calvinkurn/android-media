<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow_bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            tools:src="@tools:sample/avatars" />

        <View
            android:id="@+id/productImageSeparator"
            android:layout_width="@dimen/dp_16"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/statusLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_af_ongoing"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="@dimen/dp_6"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_3"
                app:layout_constraintStart_toEndOf="@+id/productImage"
                app:layout_constraintTop_toTopOf="@+id/productImage">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/statusTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:typographyType="body_2"
                    android:textColor="@color/color_ongoing_text"
                    android:textSize="@dimen/sp_11"
                    tools:text="Berlangsung" />
            </FrameLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="2"
                android:textColor="@color/clr_f531353b"
                app:typographyType="body_2"
                tools:text="The Unbranded Brand - UB 16oz SL bla bla and bla and bla vbla bla and bla and bla bla bla and bla and bla" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/af_price_red"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="The Unbranded Brand - UB 16oz SL bla bla and bla and bla vbla bla and bla and bla bla bla and bla and bla " />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_38"
                app:typographyType="body_3"
                tools:text="Dijual oleh Denim House" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/widget_card_with_action_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:lineSpacingExtra="6sp"
                android:text="@string/text_item_commission"
                android:textColor="@color/font_black_secondary_54"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/clr_f531353b"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="Rp10.000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/font_black_secondary_54"
                android:text="@string/text_af_clicked"
                app:typographyType="body_3"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/clickNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/clr_f531353b"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="123" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:lineSpacingExtra="6sp"
                android:text="@string/text_af_buy"
                android:textColor="@color/font_black_secondary_54"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/buyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/clr_f531353b"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:lineSpacingExtra="6sp"
                android:text="@string/text_af_total_commission"
                android:textColor="@color/font_black_secondary_54"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/commissionTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/af_commission_blue"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:text="Rp100.000.100.000" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>