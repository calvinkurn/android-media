<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_total_saldo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:drawableStart="@drawable/ic_saldo_tokopedia"
                    android:drawableLeft="@drawable/ic_saldo_tokopedia"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/total_active_balance"
                    android:textColor="@color/Neutral_N700_68"
                    app:typographyType="body_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_total_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_total_saldo_title"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/black_70"
                    app:typographyType="body_1"
                    app:typographyWeight="bold"
                    tools:text="Rp110.000" />

                <View
                    android:id="@+id/view_separator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/tv_total_saldo"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/black_12" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_affiliate_income_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_separator"
                    android:layout_marginTop="@dimen/dp_16"
                    android:drawableEnd="@drawable/ic_info_help"
                    android:drawableRight="@drawable/ic_info_help"
                    android:drawablePadding="@dimen/dp_4"
                    android:text="@string/affiliate_income"
                    android:textColor="@color/Neutral_N700_68"
                    app:typographyType="body_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_affiliate_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_separator"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textColor="@color/Neutral_N700_68"
                    app:typographyType="body_3"
                    tools:text="Rp10.000" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/shareBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/bg_btn_green"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/check_balance_detail"
                android:textColor="@color/WhiteText"
                app:typographyType="heading_5"
                tools:text="Cek Detail Saldo" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_16">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_posted_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:drawableStart="@drawable/ic_image_dark"
                    android:drawableLeft="@drawable/ic_image_dark"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/black_70"
                    android:text="@string/posted_product"
                    app:typographyType="heading_6"
                    tools:text="Produk Dipost (1)" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_posted_product"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/see_all"
                    android:textColor="@color/Green_G500"
                    app:typographyType="body_3"
                    app:typographyWeight="bold" />

                <View
                    android:id="@+id/view_separator_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/tv_posted_product"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/black_12" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_total_viewed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_separator_2"
                    android:layout_marginTop="@dimen/dp_16"
                    android:drawableStart="@drawable/ic_see_grey"
                    android:drawableLeft="@drawable/ic_see_grey"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center"
                    android:textColor="@color/Neutral_N700_68"
                    app:typographyType="body_3"
                    tools:text="38 Kali Dikunjungi" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_total_clicked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_separator_2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:drawableStart="@drawable/ic_af_dashboard_click_grey"
                    android:drawableLeft="@drawable/ic_af_dashboard_click_grey"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center"
                    android:textColor="@color/Neutral_N700_68"
                    app:typographyType="body_3"
                    tools:text="27 Klik Produk" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@string/product_bought_history"
            android:textColor="@color/black_70"
            app:typographyType="heading_3" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_12"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/ll_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_date"
                        android:textColor="@color/Neutral_N700_68"
                        app:typographyType="small" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:drawableStart="@drawable/ic_calendar_blank"
                        android:drawableLeft="@drawable/ic_calendar_blank"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="@string/choose_date"
                        android:textColor="@color/Neutral_N700_20"
                        app:typographyType="body_2" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_2"
                        android:background="@color/Neutral_N75" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_date"
                        android:textColor="@color/Neutral_N700_68"
                        app:typographyType="small" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:drawableStart="@drawable/ic_calendar_blank"
                        android:drawableLeft="@drawable/ic_calendar_blank"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="@string/choose_date"
                        android:textColor="@color/Neutral_N700_20"
                        app:typographyType="body_2" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_2"
                        android:background="@color/Neutral_N75" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <com.tokopedia.design.component.Tabs
            android:id="@+id/tl_product_bought"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_24"
            android:visibility="visible"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorHeight="@dimen/dp_1"
            app:tabSelectedTextColor="@color/tkpd_main_green"
            app:tabTextColor="@color/font_black_disabled_38"
            app:tabTextAppearance="@style/Tabs.Secondary"
            app:tabIndicatorColor="@color/tkpd_main_green"
            android:theme="@style/ThemeOverlay.AppCompat.Light"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_product_bought"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</ScrollView>