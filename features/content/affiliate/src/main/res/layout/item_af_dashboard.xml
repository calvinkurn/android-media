<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:textColor="@color/black_70"
        android:visibility="gone"
        app:typographyType="heading_5"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        tools:visibility="visible"
        tools:text="Produk Afiliasi Berlangsung" />

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="0dp">

                <com.tokopedia.design.image.SquareImageView
                    android:id="@+id/iv_item"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    tools:background="@tools:sample/avatars"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_8">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textColor="@color/black_70"
                    app:typographyType="heading_5"
                    tools:text="Nasgi goreng roboto memang nikmat dan sedap tiada tara 2 kali makan padti nik"/>

                <LinearLayout
                    android:id="@+id/layout_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_4">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_af_active_1"
                        android:textColor="@color/Neutral_N700_68"
                        android:textSize="@dimen/sp_14"
                        app:typographyType="body_3"
                        app:typographyWeight="bold"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_comission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginStart="@dimen/dp_4"
                        android:textColor="@color/af_commission_blue"
                        android:textSize="@dimen/sp_14"
                        app:typographyType="body_3"
                        app:typographyWeight="bold"
                        tools:text="Rp10.000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_from_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        app:srcCompat="@drawable/ic_af_dashboard_click_grey"/>

                    <TextView
                        android:id="@+id/tv_click_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:textColor="@color/font_black_disabled_38"
                        android:textSize="@dimen/sp_12"
                        tools:text="20 klik"/>

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_6"
                        app:srcCompat="@drawable/ic_af_dashboard_cart"/>

                    <TextView
                        android:id="@+id/tv_buy_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:textColor="@color/font_black_disabled_38"
                        android:textSize="@dimen/sp_12"
                        tools:text="20 dibeli"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_from_traffic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    tools:visibility="visible">

                    <com.tokopedia.feedcomponent.view.widget.RatingBarReview
                        android:id="@+id/rb_curated_traffic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:numstars="5"/>

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Neutral_N700_68"
                        app:typographyType="body_3"
                        tools:text="(2)"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_btn_create_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_green_empty"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_4">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Green_G500"
                        android:text="@string/create_post"
                        app:typographyType="heading_6"
                        tools:text="Buat Post"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </com.tokopedia.unifycomponents.CardUnify>

</LinearLayout>