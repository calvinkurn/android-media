<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingStart="@dimen/dp_16"
    tools:paddingEnd="@dimen/dp_16">

    <ImageView
        android:id="@+id/imageShare"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/ic_facebook" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:textColor="#e131353b"
        android:layout_toEndOf="@id/imageShare"
        android:layout_toRightOf="@id/imageShare"
        android:layout_centerVertical="true"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="@string/af_share_facebook_option"/>

    <Switch
        android:id="@+id/toggleShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        style="@style/Switch"/>

</RelativeLayout>
