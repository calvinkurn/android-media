<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingStart="@dimen/dp_16"
    tools:paddingEnd="@dimen/dp_16">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageShare"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        tools:srcCompat="@drawable/ic_facebook" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageShare"
        android:layout_toRightOf="@id/imageShare"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shareTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="@string/af_share_facebook_option"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shareSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N700_68"
            android:layout_marginTop="@dimen/dp_2"
            app:typographyType="body_3"
            tools:text="203 orang akan melihat post ini"/>

    </LinearLayout>

    <Switch
        android:id="@+id/toggleShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        style="@style/Switch"/>

</RelativeLayout>
