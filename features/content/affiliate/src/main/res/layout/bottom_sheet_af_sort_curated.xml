<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_close_default" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toEndOf="@id/iv_close"
            android:layout_toRightOf="@id/iv_close"
            android:text="@string/af_sort"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="heading_3"
            tools:text="Filter Tanggal" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:text="@string/save"
            android:textColor="@color/Green_G500"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

    </RelativeLayout>

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/rv_sort_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>