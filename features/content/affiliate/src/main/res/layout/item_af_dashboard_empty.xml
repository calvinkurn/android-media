<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_40"
    android:layout_marginRight="@dimen/dp_40"
    android:layout_marginTop="@dimen/dp_24"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_af_empty"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="@string/text_empty_start_recommendation_string"
        android:textColor="@color/font_black_secondary_54"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="@string/text_empty_have_recommendation"
        android:textColor="@color/font_black_secondary_54"
        android:textSize="@dimen/sp_16"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_start_recommendation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/bg_af_btn_green"
        android:fontFamily="sans-serif-medium"
        android:text="@string/text_empty_start_recommendation_btn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</LinearLayout>