<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_full_dashboard_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/cl_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/abl_af_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Neutral_N0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll">

                    <com.tokopedia.feedcomponent.view.widget.ByMeInstastoryView
                        android:id="@+id/bmiv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="@+id/ll_dashboard"
                        app:layout_constraintEnd_toEndOf="@+id/ll_dashboard"
                        app:layout_constraintTop_toTopOf="@+id/ll_dashboard"
                        app:layout_constraintBottom_toBottomOf="@+id/ll_dashboard"/>

                    <LinearLayout
                        android:id="@+id/ll_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:id="@+id/ll_income_overview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_af_income_dashboard"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/dp_24">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/dp_16"
                                android:layout_marginEnd="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_24"
                                app:cardCornerRadius="@dimen/dp_8"
                                app:cardElevation="@dimen/dp_5">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_12"
                                    android:layout_marginEnd="@dimen/dp_12"
                                    android:layout_marginTop="@dimen/dp_14"
                                    android:layout_marginBottom="@dimen/dp_14">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/iv_total_saldo_title"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/ic_saldo_tokopedia" />

                                    <com.tokopedia.unifyprinciples.Typography
                                        android:id="@+id/tv_total_saldo_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:text="@string/total_active_balance"
                                        android:textColor="@color/Neutral_N700_68"
                                        app:layout_constraintBottom_toBottomOf="@id/iv_total_saldo_title"
                                        app:layout_constraintStart_toEndOf="@id/iv_total_saldo_title"
                                        app:layout_constraintTop_toTopOf="@id/iv_total_saldo_title"
                                        app:typographyType="body_3" />

                                    <com.tokopedia.unifyprinciples.Typography
                                        android:id="@+id/tv_total_saldo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black_70"
                                        app:layout_constraintBottom_toBottomOf="@id/iv_total_saldo_title"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/iv_total_saldo_title"
                                        app:typographyType="body_1"
                                        app:typographyWeight="bold"
                                        tools:text="Rp110.000" />

                                    <View
                                        android:id="@+id/view_separator"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_1"
                                        android:layout_marginTop="@dimen/dp_14"
                                        android:background="@color/black_12"
                                        app:layout_constraintTop_toBottomOf="@id/iv_total_saldo_title" />

                                    <com.tokopedia.unifyprinciples.Typography
                                        android:id="@+id/tv_affiliate_income_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_16"
                                        android:layout_marginBottom="@dimen/dp_6"
                                        android:text="@string/affiliate_income"
                                        android:textColor="@color/Neutral_N700_68"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/view_separator"
                                        app:typographyType="body_3" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/iv_af_income_info"
                                        android:layout_width="@dimen/dp_12"
                                        android:layout_height="@dimen/dp_12"
                                        android:layout_marginStart="@dimen/dp_4"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        app:layout_constraintBottom_toBottomOf="@id/tv_affiliate_income_title"
                                        app:layout_constraintStart_toEndOf="@id/tv_affiliate_income_title"
                                        app:layout_constraintTop_toTopOf="@id/tv_affiliate_income_title"
                                        app:srcCompat="@drawable/ic_info_help" />

                                    <com.tokopedia.unifyprinciples.Typography
                                        android:id="@+id/tv_affiliate_income"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/Neutral_N700_68"
                                        app:layout_constraintBottom_toBottomOf="@id/tv_affiliate_income_title"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/tv_affiliate_income_title"
                                        app:typographyType="body_3"
                                        tools:text="Rp10.000" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:id="@+id/ll_check_balance"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_48"
                                android:layout_marginStart="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_16"
                                android:layout_marginEnd="@dimen/dp_16"
                                android:background="@drawable/bg_btn_green"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.tokopedia.unifyprinciples.Typography
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/check_balance_detail"
                                    android:textColor="@color/WhiteText"
                                    app:typographyType="heading_5"
                                    tools:text="Cek Detail Saldo" />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_12"
                            android:orientation="vertical"
                            app:cardCornerRadius="@dimen/dp_8"
                            app:cardElevation="@dimen/dp_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/dp_12"
                                android:layout_marginTop="@dimen/dp_14"
                                android:layout_marginEnd="@dimen/dp_12"
                                android:layout_marginBottom="@dimen/dp_14">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_posted_product"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/iv_posted_product"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:layout_marginBottom="@dimen/dp_14"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/ic_image_dark" />

                                    <com.tokopedia.unifyprinciples.Typography
                                        android:id="@+id/tv_posted_product"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/posted_product"
                                        android:textColor="@color/black_70"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        app:layout_constraintBottom_toBottomOf="@id/iv_posted_product"
                                        app:layout_constraintStart_toEndOf="@id/iv_posted_product"
                                        app:layout_constraintTop_toTopOf="@id/iv_posted_product"
                                        app:typographyType="heading_6"
                                        tools:text="Produk Dipost (1)" />

                                    <com.tokopedia.unifyprinciples.Typography
                                        android:id="@+id/tv_see_all"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="@dimen/dp_5"
                                        android:gravity="center"
                                        android:text="@string/see_all"
                                        android:textColor="@color/Green_G500"
                                        app:layout_constraintBottom_toBottomOf="@id/iv_posted_product"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/iv_posted_product"
                                        app:typographyType="body_3"
                                        app:typographyWeight="bold" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <View
                                    android:id="@+id/v_posted_viewed_separator"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"
                                    android:background="@color/black_12"
                                    android:visibility="gone"
                                    tools:visibility="visible"/>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/cl_viewed_clicked"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    tools:visibility="visible">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/iv_total_viewed"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:layout_marginTop="@dimen/dp_14"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/ic_see_grey"/>

                                    <com.tokopedia.unifyprinciples.Typography
                                        android:id="@+id/tv_total_viewed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/dp_4"
                                        android:layout_marginLeft="@dimen/dp_4"
                                        android:textColor="@color/Neutral_N700_68"
                                        app:layout_constraintBottom_toBottomOf="@id/iv_total_viewed"
                                        app:layout_constraintStart_toEndOf="@id/iv_total_viewed"
                                        app:layout_constraintTop_toTopOf="@id/iv_total_viewed"
                                        app:typographyType="body_3"
                                        tools:text="38 Kali Dikunjungi" />

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/iv_total_clicked"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_24"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="@dimen/dp_4"
                                        android:layout_marginRight="@dimen/dp_4"
                                        app:layout_constraintBottom_toBottomOf="@+id/tv_total_clicked"
                                        app:layout_constraintEnd_toStartOf="@+id/tv_total_clicked"
                                        app:layout_constraintTop_toTopOf="@+id/tv_total_clicked"
                                        app:srcCompat="@drawable/ic_af_dashboard_click_grey" />

                                    <com.tokopedia.unifyprinciples.Typography
                                        android:id="@+id/tv_total_clicked"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/Neutral_N700_68"
                                        app:layout_constraintBottom_toBottomOf="@id/iv_total_viewed"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@id/iv_total_viewed"
                                        app:typographyType="body_3"
                                        tools:text="27 Klik Produk" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/ll_curated_product_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <com.tokopedia.unifyprinciples.Typography
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_24"
                                android:layout_marginEnd="@dimen/dp_16"
                                android:text="@string/curated_product_history"
                                android:textColor="@color/black_70"
                                app:typographyType="heading_3" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_16"
                                android:layout_marginTop="@dimen/dp_16"
                                android:layout_marginEnd="@dimen/dp_16"
                                android:layout_marginBottom="@dimen/dp_24"
                                app:cardCornerRadius="@dimen/dp_8"
                                app:cardElevation="@dimen/dp_5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/dp_12"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:id="@+id/ll_start_date"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/dp_24"
                                        android:layout_marginRight="@dimen/dp_24"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/start_date"
                                            android:textColor="@color/Neutral_N700_68"
                                            app:typographyType="small" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginTop="@dimen/dp_2">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:id="@+id/iv_start_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_calendar_blank" />

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:id="@+id/tv_start_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/dp_8"
                                                android:layout_marginLeft="@dimen/dp_8"
                                                android:hint="@string/choose_date"
                                                android:textColor="@color/black_70"
                                                android:textColorHint="@color/Neutral_N700_20"
                                                app:typographyType="body_2" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/dp_1"
                                            android:layout_marginTop="@dimen/dp_2"
                                            android:background="@color/Neutral_N75" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/ll_end_date"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/dp_24"
                                        android:layout_marginRight="@dimen/dp_24"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <com.tokopedia.unifyprinciples.Typography
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/end_date"
                                            android:textColor="@color/Neutral_N700_68"
                                            app:typographyType="small" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginTop="@dimen/dp_2">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:id="@+id/iv_end_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_calendar_blank" />

                                            <com.tokopedia.unifyprinciples.Typography
                                                android:id="@+id/tv_end_date"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/dp_8"
                                                android:layout_marginLeft="@dimen/dp_8"
                                                android:hint="@string/choose_date"
                                                android:textColor="@color/black_70"
                                                android:textColorHint="@color/Neutral_N700_20"
                                                app:typographyType="body_2" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/dp_1"
                                            android:layout_marginTop="@dimen/dp_2"
                                            android:background="@color/Neutral_N75" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <com.tokopedia.unifycomponents.EmptyState
                            android:id="@+id/es_share_now"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:unifyEmptyStateCTAFullWidth="true"
                            app:unifyEmptyStateDescription="@string/af_curated_empty_subtitle"
                            app:unifyEmptyStateImageDrawable="@drawable/ic_tokopedia_share_post"
                            app:unifyEmptyStateOrientation="vertical"
                            app:unifyEmptyStatePrimaryCTAText="@string/af_share_now"
                            app:unifyEmptyStateTitle="@string/af_curated_empty_title"
                            app:unifyEmptyStateType="page"
                            android:visibility="gone"
                            tools:visibility="visible"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.tokopedia.design.component.Tabs
                    android:id="@+id/tl_curated_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:tabMode="fixed"
                    app:tabGravity="fill"
                    app:tabIndicatorHeight="@dimen/dp_1"
                    app:tabSelectedTextColor="@color/tkpd_main_green"
                    app:tabTextColor="@color/font_black_disabled_38"
                    app:tabTextAppearance="@style/Tabs.Secondary"
                    app:tabIndicatorColor="@color/tkpd_main_green"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_scrollFlags="enterAlways"/>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_curated_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>