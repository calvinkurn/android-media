<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/Neutral_N700"
        android:text="@string/af_share_title"
        app:typographyType="heading_4"
        tools:text="Share biar makin laris!"/>
    
    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/Neutral_N700"
        android:text="@string/af_share_subtitle"
        app:typographyType="body_3"
        tools:text="Makin banyak yang lihat, makin cepat larisnya."/>

    <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
        android:id="@+id/shareList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"/>

    <LinearLayout
        android:id="@+id/shareBtn"
        style="@style/FavButton"
        android:background="@color/Green_G500"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/af_share_aja"
            android:textColor="@color/WhiteText"
            app:typographyType="heading_5"
            android:lineSpacingExtra="5sp"
            tools:text="Sip, Share Aja!"/>
    </LinearLayout>

</LinearLayout>