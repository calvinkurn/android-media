<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_empty_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_empty_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="@+id/tv_empty_title"
        app:layout_constraintStart_toStartOf="@+id/tv_empty_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_tokopedia_share_post" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:textAlignment="center"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_empty_image"
        app:typographyType="heading_2"
        tools:text="Share Postmu Sekarang" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_empty_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:textAlignment="center"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="@id/tv_empty_title"
        app:layout_constraintStart_toStartOf="@id/tv_empty_title"
        app:layout_constraintTop_toBottomOf="@id/tv_empty_title"
        app:typographyType="body_3"
        tools:text="Semakin sering share, Semakin besar kesempatanmu mendapatkan komisi"/>

    <LinearLayout
        android:id="@+id/ll_empty_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_34"
        android:background="@drawable/bg_af_btn_green"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_empty_subtitle"
        app:layout_constraintVertical_bias="0">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_action_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/WhiteText"
            app:typographyType="heading_5"
            tools:text="Cek Detail Saldo" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
