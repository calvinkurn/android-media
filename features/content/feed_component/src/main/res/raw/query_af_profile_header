query ProfileHeader ($userIDTarget: Int!) {
    bymeProfileHeader(userIDTarget: $userIDTarget) {
      profile {
        id
        name
        isKol
        avatar
        affiliateName
        link
        isAffiliate
        isShowAffiliateContent
        isFollowed
        totalFollowing {
          formatted
          number
        }
        totalFollower {
          formatted
          number
        }
      }
      error {
        message
        type
        code
      }
      config {
        showPostButton
      }
    }
}
