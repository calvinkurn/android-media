<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_0"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/like_anim"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/video_tagging_parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:animateLayoutChanges="true"
        android:minWidth="@dimen/layout_lvl3"
        app:cardBackgroundColor="@color/Unify_NN900"
        app:cardCornerRadius="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@id/post_image"
        app:layout_constraintStart_toStartOf="@id/post_image">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/product_tag_button"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                app:icon_color_light_enable="@color/Unify_N0"
                app:icon_color_night_enable="@color/Unify_N0"
                app:icon_name="PRODUCT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/product_tag_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unify_image_type="circle" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/feed_post_tag_text"
                android:textColor="@color/Unify_N0"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/product_tag_button"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="small"
                app:typographyWeight="reguler" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>