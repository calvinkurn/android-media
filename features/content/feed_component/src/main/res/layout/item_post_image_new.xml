<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_image_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_0"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/like_anim"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/video_tagging_parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:animateLayoutChanges="true"
        android:minWidth="@dimen/layout_lvl3"
        app:cardBackgroundColor="@color/Unify_NN900"
        app:cardCornerRadius="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@id/post_image"
        app:layout_constraintStart_toStartOf="@id/post_image">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lihat_parent_layout"
            android:layout_width="wrap_content"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/product_tag_button"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                app:icon_color_light_enable="@color/Unify_N0"
                app:icon_color_night_enable="@color/Unify_N0"
                app:icon_name="PRODUCT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/product_tag_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unify_image_type="circle" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_3"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/feed_post_tag_text"
                android:textColor="@color/Unify_N0"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/product_tag_button"
                app:layout_constraintBottom_toBottomOf="@id/product_tag_button"
                app:layout_constraintTop_toTopOf="@id/product_tag_button"
                app:typographyType="body_3"
                app:typographyWeight="bold"
                tools:visibility="visible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_ads_detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/unify_space_12"
        android:paddingBottom="@dimen/unify_space_12"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@color/Unify_NN50"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/top_ads_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/chevron"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chevron"
            android:text="@string/feeds_sek_sekarang"
            app:typographyType="body_3"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/top_ads_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/product_card_text_view_price_height"
            android:layout_marginTop="@dimen/product_card_label_price_margin_top"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_96"
            android:visibility="gone"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/top_ads_product_name"
            app:layout_constraintTop_toBottomOf="@id/top_ads_product_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp7.999.000"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/top_ads_label_discount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/product_card_label_discount_height"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintStart_toEndOf="@id/top_ads_price"
            app:layout_constraintTop_toTopOf="@id/top_ads_price"
            tools:text="20%"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/top_ads_slashed_price"
            android:layout_width="0dp"
            android:layout_height="@dimen/product_card_label_discount_height"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_44"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/top_ads_label_discount"
            app:layout_constraintStart_toEndOf="@id/top_ads_label_discount"
            app:layout_goneMarginLeft="@dimen/dp_0"
            app:typographyType="small"
            tools:text="Rp8.499.000"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/top_ads_label_cashback"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/product_card_label_price_height"
            android:visibility="gone"
            app:labelType="general_light_green"
            app:layout_constraintTop_toTopOf="@id/top_ads_price"
            app:layout_constraintStart_toEndOf="@id/top_ads_slashed_price"
            android:layout_marginStart="@dimen/spacing_lvl3"
            tools:visibility="visible"
            tools:text="Cashback" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/chevron"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            app:icon_name="CHEVRON_RIGHT"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            />

<!--
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:constraint_referenced_ids="top_ads_label_cashback,top_ads_price,top_ads_label_discount,top_ads_slashed_price" />
-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

