<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_image_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_0"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/like_anim"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:paddingTop="@dimen/unify_space_4"
        android:paddingStart="@dimen/feed_component_dp_6"
        android:paddingBottom="@dimen/unify_space_4"
        android:id="@+id/tv_lihat_product"
        android:ellipsize="end"
        android:singleLine="true"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:drawablePadding="@dimen/unify_space_4"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:gravity="center_vertical|left"
        android:drawableTint="@color/feed_dms_produk_tag_heading_color"
        app:drawableLeftCompat="@drawable/feed_ic_product"
        android:background="@drawable/feed_bg_lihat_produk"
        android:layout_width="@dimen/dp_24"
        android:alpha="0.9"
        android:minWidth="@dimen/dp_24"
        android:elevation="@dimen/unify_space_16"
        android:text="@string/feed_post_tag_text"
        android:textColor="@color/feed_dms_produk_tag_heading_color"
        app:layout_constraintBottom_toBottomOf="@id/post_image"
        app:layout_constraintStart_toStartOf="@id/post_image"
        />
  
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_ads_detail_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_NN50"
        android:paddingTop="@dimen/unify_space_8"
        android:paddingBottom="@dimen/unify_space_8"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/post_image"
        tools:visibility="visible"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/top_ads_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/feeds_cek_sekarang"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chevron"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/chevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:icon_name="CHEVRON_RIGHT"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

