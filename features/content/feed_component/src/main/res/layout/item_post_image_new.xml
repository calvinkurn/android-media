<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unify_space_0"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect" />

    <androidx.cardview.widget.CardView
        android:id="@+id/product_tagging_parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:minWidth="@dimen/layout_lvl3"
        app:cardBackgroundColor="@color/Neutral_N700_96"
        app:cardCornerRadius="@dimen/layout_lvl3"
        app:layout_constraintBottom_toBottomOf="@id/post_image"
        app:layout_constraintStart_toStartOf="@id/post_image">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/product_tag_button"
                android:layout_width="@dimen/unify_space_12"
                android:layout_height="@dimen/unify_space_12"
                android:layout_margin="@dimen/feed_component_dp_6"
                app:icon_color_light_enable="@color/Unify_N0"
                app:icon_color_night_enable="@color/Unify_N0"
                app:icon_name="PRODUCT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/product_tag_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unify_image_type="circle" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/product_tag_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/feed_component_dp_6"
                android:textColor="@color/Unify_N0"
                android:textSize="@dimen/unify_font_10"
                app:layout_constraintBottom_toBottomOf="@id/product_tag_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/product_tag_button"
                app:layout_constraintTop_toTopOf="@id/product_tag_button"
                app:typographyWeight="reguler"
                tools:text="Lihat Produk"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>