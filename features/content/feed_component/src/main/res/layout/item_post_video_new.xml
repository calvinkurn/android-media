<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_video_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/videoPreviewImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@color/transparent"
            app:unify_image_corner_radius="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"
            tools:visibility="visible" />

        <View
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader"
            android:layout_width="@dimen/unify_space_48"
            android:layout_height="@dimen/unify_space_48"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="circular_white" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/layout_video"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:resize_mode="zoom"
            app:show_timeout="3000"
            app:layout_constraintDimensionRatio="1:1"
            app:shutter_background_color="@android:color/transparent"
            app:surface_type="texture_view"
            app:use_controller="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/timer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:textColor="@color/Unify_N50"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/layout_main"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <ImageView
        android:id="@+id/ic_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_button" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/video_lihat_product"
        android:layout_width="@dimen/unify_space_24"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:background="@drawable/feed_bg_lihat_produk"
        android:drawablePadding="@dimen/unify_space_4"
        android:drawableTint="@color/feed_dms_produk_tag_heading_color"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:minWidth="@dimen/unify_space_24"
        android:paddingStart="@dimen/feed_component_dp_6"
        android:paddingTop="@dimen/unify_space_2"
        android:paddingBottom="@dimen/unify_space_2"
        android:singleLine="true"
        android:text="@string/feed_post_tag_text"
        android:textColor="@color/feed_dms_produk_tag_heading_color"
        android:alpha="0.9"
        app:drawableLeftCompat="@drawable/feed_ic_product"
        app:layout_constraintBottom_toBottomOf="@id/layout_main"
        app:layout_constraintStart_toStartOf="@id/layout_main"
        app:typographyType="body_3"
        app:typographyWeight="bold" />


    <ImageView
        android:id="@+id/volumeIcon"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:layout_marginBottom="@dimen/unify_space_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_feed_volume_mute"
        android:contentDescription="@string/feed_post_content_video_volume_btn_desc" />


</androidx.constraintlayout.widget.ConstraintLayout>