<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_150"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/badge"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="ContentDescription"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <com.tokopedia.unifycomponents.CardUnify
                android:id="@+id/layout_video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:background="@color/grey_250"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:cardCornerRadius="@dimen/dp_4"
                tools:visibility="visible">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_video_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    app:typographyType="body_2"
                    tools:text="00:14"/>
            </com.tokopedia.unifycomponents.CardUnify>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars"
                android:layout_marginRight="@dimen/dp_4"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:ellipsize="end"
                app:typographyType="heading_6"
                tools:text="Test data"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/footerCta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/likeIcon"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:contentDescription="@string/kol_action_like"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_thumb"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/likeText"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/likeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:text="@string/kol_action_like"
                    android:textColor="@color/color_like_comment_share"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="normal"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/commentIcon"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:contentDescription="@string/kol_action_comment"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_comment"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry"
                    tools:visibility="visible" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/commentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:text="@string/kol_action_comment"
                    android:textColor="@color/color_like_comment_share"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="normal"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry"
                    tools:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>