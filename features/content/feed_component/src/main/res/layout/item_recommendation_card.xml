<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/feed_recommendation_width"
        android:layout_height="wrap_content">

        <com.tokopedia.design.image.SquareImageView
            android:id="@+id/ivImage1"
            android:layout_width="72dp"
            android:layout_height="0dp"
            android:background="@color/Unify_N50"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ivImage2"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.design.image.SquareImageView
            android:id="@+id/ivImage2"
            android:layout_width="72dp"
            android:layout_height="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toRightOf="@+id/ivImage1"
            app:layout_constraintRight_toLeftOf="@+id/ivImage3"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.design.image.SquareImageView
            android:id="@+id/ivImage3"
            android:layout_width="72dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toRightOf="@+id/ivImage2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_gray_border"
            app:layout_constraintBottom_toBottomOf="@+id/ivImage1"
            app:layout_constraintLeft_toLeftOf="@+id/btnFollow"
            app:layout_constraintRight_toRightOf="@+id/btnFollow"
            app:layout_constraintTop_toBottomOf="@+id/ivImage1"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btnFollow"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:textAllCaps="false"
            app:buttonCompatSize="small"
            app:buttonCompatType="primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivImage1"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Follow"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="5sp"
            android:lines="2"
            android:textColor="@color/Unify_N700_32"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnFollow"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            tools:text="Disini anda mendapatkan harga fashion terbaik hanya di tokopedia milik" />

        <ImageView
            android:id="@+id/ivBadge"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvName"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/tvDescription"
            app:layout_constraintTop_toTopOf="@+id/tvName"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:textColor="@color/Unify_N700_68"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/ivBadge"
            tools:text="Kucing saya bundar bundar kucing" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
