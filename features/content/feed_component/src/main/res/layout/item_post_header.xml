<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/shop_image"
        android:layout_width="@dimen/unify_space_32"
        android:layout_height="@dimen/unify_space_32"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/unify_space_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_type="circle"
        tools:srcCompat="@drawable/ic_affiliate_video" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/shop_badge"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/shop_image"
        app:layout_constraintStart_toEndOf="@id/shop_image"
        app:layout_constraintTop_toTopOf="@id/shop_image"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:textColor="@color/Unify_N700"
        app:layout_constraintBottom_toBottomOf="@id/shop_image"
        app:layout_constraintEnd_toStartOf="@id/menu_button"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/shop_badge"
        app:layout_constraintTop_toTopOf="@id/shop_image"
        app:typographyType="heading_6"
        tools:text="Fellow Official" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:icon_name="MENU_KEBAB_HORIZONTAL"
        app:layout_constraintBottom_toBottomOf="@id/shop_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/shop_name" />

</merge>