<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/unify_space_128"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/unify_space_4"
    android:backgroundTint="@color/Unify_NN0"
    app:cardCornerRadius="@dimen/unify_space_8"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_shop_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shop_recom"
        android:padding="@dimen/unify_space_8">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/img_item_shop_close"
            android:layout_width="@dimen/unify_space_12"
            android:layout_height="@dimen/unify_space_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:icon_name="CLOSE" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/img_item_shop_image"
            android:layout_width="@dimen/unify_space_64"
            android:layout_height="@dimen/unify_space_64"
            android:layout_marginTop="@dimen/unify_space_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unify_image_type="circle"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/img_item_shop_badge"
            android:layout_width="@dimen/feed_component_dp_14"
            android:layout_height="@dimen/feed_component_dp_14"
            android:scaleType="centerCrop"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/txt_item_shop_name"
            app:layout_constraintEnd_toStartOf="@id/txt_item_shop_name"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_item_shop_name"
            app:layout_constraintWidth_default="wrap"
            app:unify_image_type="rect"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_item_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_4"
            android:layout_marginTop="@dimen/unify_space_8"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/Unify_NN950"
            android:textSize="@dimen/unify_font_12"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_item_shop_badge"
            app:layout_constraintTop_toBottomOf="@id/img_item_shop_image"
            app:layout_constraintWidth_default="wrap"
            tools:text="Nike Official Indonesia" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_item_shop_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_item_shop_name"
            app:typographyType="small"
            tools:text="nike_indonesia_indonesia_indonesia" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_item_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_8"
            android:text="@string/btn_text_follow"
            android:textSize="@dimen/unify_font_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_item_shop_username"
            app:unifyButtonSize="small"
            app:unifyButtonVariant="filled" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>