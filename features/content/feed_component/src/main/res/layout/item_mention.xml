<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mention_separator"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:layout_margin="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/dp_64"
            android:layout_marginRight="@dimen/dp_64"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:layout_weight="1"
            tools:text="Kemas Dwisatria R" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/dp_64"
            android:layout_marginRight="@dimen/dp_64"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            android:layout_weight="1"
            tools:text="Kemas Acil" />

    </LinearLayout>

</LinearLayout>