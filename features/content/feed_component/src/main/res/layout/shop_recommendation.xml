<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_Background">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_wording_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/unify_space_16"
            android:text="@string/follow_account"
            android:textColor="@color/Unify_NN950"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shop_recom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_8"
            android:paddingBottom="@dimen/unify_space_8"
            app:layout_constraintTop_toBottomOf="@id/txt_wording_follow"
            tools:listitem="@layout/shop_recommendation" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_shop_recom_empty_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/unify_space_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_shop_recom"
            tools:visibility="gone">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/img_empty"
                android:layout_width="@dimen/unify_space_48"
                android:layout_height="@dimen/unify_space_48"
                android:layout_marginTop="@dimen/unify_space_40"
                android:tint="@color/Unify_NN1000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/iconunify_image" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_error_empty_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/unify_space_4"
                android:gravity="center"
                android:text="@string/empty_page_title"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_empty"
                app:typographyType="heading_2" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_error_empty_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_2"
                android:gravity="center"
                android:text="@string/empty_page_desc"
                android:textColor="@color/Unify_NN600"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_error_empty_title"
                app:typographyType="body_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>