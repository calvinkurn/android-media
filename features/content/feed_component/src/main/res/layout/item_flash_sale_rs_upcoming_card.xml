<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fst_card_view_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/flash_sale_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/unify_space_8"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="@string/btn_asgc_flash_sale_name"
        />

    <com.tokopedia.unifycomponents.timer.TimerUnifySingle
        android:id="@+id/fst_timer"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:timer_unify_single_showClockIcon="true"
        app:timer_unify_single_text="@string/btn_asgc_flash_sale_time_text"
        app:timer_unify_single_textWidth="wrap"
        app:timer_unify_single_variant="main"
        app:layout_constraintStart_toStartOf="@id/flash_sale_title"
        app:layout_constraintTop_toBottomOf="@id/flash_sale_title"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ribbon_image_parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/fst_timer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/Unify_Background"
       >

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/fst_reminder_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/btn_asgc_flash_remind_btn_text"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        android:minHeight="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:gravity="center"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>