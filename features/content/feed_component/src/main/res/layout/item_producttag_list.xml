<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_8"
    app:cardCornerRadius="@dimen/dp_8"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/productLayout"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_2"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    tools:ignore="ContentDescription"
                    tools:src="@tools:sample/avatars" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/productNameSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_16"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:fontFamily="sans-serif"
                android:textColor="@color/color_like_comment_share"
                android:lineSpacingExtra="4sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Enfagrow A+ Susu Anak 1-3 Tahun - Vanilla"/>

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productLayout"
                android:fontFamily="sans-serif"
                android:gravity="bottom"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="@color/orange_red"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:visibility="visible"
                tools:text="Rp 3.121.500"
                tools:visibility="visible" />

            <RelativeLayout
                android:id="@+id/productTagBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_4"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/productTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_10"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:gravity="center"/>
            </RelativeLayout>

            <com.tokopedia.feedcomponent.view.widget.RatingBarReview
                android:id="@+id/widgetRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"/>
        </LinearLayout>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btnProductBuy"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:foregroundGravity="bottom"
            android:text="@string/string_posttag_buy"
            app:buttonCompatType="transaction" />

    </LinearLayout>
</android.support.v7.widget.CardView>