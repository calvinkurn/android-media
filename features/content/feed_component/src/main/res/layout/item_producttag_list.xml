<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="4dp"
    android:background="@color/Unify_Background"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        tools:ignore="UnusedAttribute">

        <FrameLayout
            android:id="@+id/productLayout"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/bg_frame_rounded">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:adjustViewBounds="true"
                android:background="@color/Unify_NN0"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/productNameSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="4sp"
                android:maxLines="1"
                android:textColor="@color/Unify_NN950_96"
                app:typographyType="heading_5"
                tools:text="Enfagrow A+ Susu Anak 1-3 Tahun - Vanilla Enak Sekali Diminum Setiap hari" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                app:typographyType="small"
                tools:background="@color/Unify_RN400"
                tools:text="Cashback 10%"
                tools:textColor="@color/Unify_NN0" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:textColor="@color/Unify_YN500"
                android:visibility="visible"
                app:typographyType="heading_5"
                app:typographyWeight="bold"
                tools:text="Rp 3.121.500.121.500.121.500.121.500.121.500.121.500"
                tools:visibility="visible" />

            <com.tokopedia.feedcomponent.view.widget.RatingBarReview
                android:id="@+id/widgetRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/btnProductBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_btn_transaction"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/textBtnProductBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN0"
                app:typographyType="heading_5"
                tools:text="@string/string_posttag_buy" />

        </FrameLayout>

    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>