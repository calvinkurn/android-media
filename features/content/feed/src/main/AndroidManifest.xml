<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.feedplus">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".view.activity.FeedPlusDetailActivity"
            android:label="@string/title_detail_feed"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_feed_detail_page"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".profilerecommendation.view.activity.FollowRecomActivity"
            android:label="@string/recommendation_for_you"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify" />
        <activity
            android:name=".view.activity.FeedOnboardingActivity"
            android:label="@string/title_feed_onboarding"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name=".view.activity.PlayVideoLiveListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify">
        <intent-filter>
            <action android:name="com.tokopedia.internal.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />

            <data
                android:host="@string/host_feed_play_live_detail"
                android:scheme="@string/internal_scheme" />
        </intent-filter>
        </activity>
    </application>
</manifest>