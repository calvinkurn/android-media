        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="view.activity.BlogWebViewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".view.activity.RecentViewActivity"
