<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_shadow_feed"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/dp_10"
            android:text="@string/sub_history_product"
            android:textColor="@color/font_black_primary_70"
            android:textSize="@dimen/fontvs"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/dp_10"
            android:text="@string/title_see_all"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/fontvs" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_product_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal" />

</LinearLayout>