<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_4"
        tools:text="Klik follow untuk lihat update akun kesukaanmu di Feed!" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_4"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layouting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.design.image.SquareImageView
                android:id="@+id/iv_image1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/topads_gray_default_bg"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_image2"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <com.tokopedia.design.image.SquareImageView
                android:id="@+id/iv_image2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/topads_gray_default_bg"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_1"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/iv_image1"
                app:layout_constraintRight_toLeftOf="@+id/iv_image3"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <com.tokopedia.design.image.SquareImageView
                android:id="@+id/iv_image3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/topads_gray_default_bg"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/iv_image2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/bg_circle_gray_border"
                app:layout_constraintBottom_toBottomOf="@+id/iv_image1"
                app:layout_constraintLeft_toLeftOf="@+id/btn_follow"
                app:layout_constraintRight_toRightOf="@+id/btn_follow"
                app:layout_constraintTop_toBottomOf="@+id/iv_image1"
                app:layout_constraintVertical_chainStyle="packed"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_8"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_image1"
                app:layout_constraintVertical_chainStyle="packed"
                android:minWidth="@dimen/dp_72"
                android:minHeight="@dimen/dp_32"
                app:unifyButtonSize="small"
                app:unifyButtonType="main"
                tools:text="Follow"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5sp"
                android:lines="2"
                android:textColor="@color/black_38"
                app:layout_constraintVertical_bias="0"
                app:typographyType="small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_follow"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                tools:text="Toko gadget populer" />

            <ImageView
                android:id="@+id/iv_badge"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="@+id/tvName"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/tv_description"
                app:layout_constraintTop_toTopOf="@+id/tv_name"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:lines="1"
                android:textColor="@color/black_70"
                app:typographyType="heading_6"
                app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/iv_badge"
                tools:text="Kucing saya bundar bundar kucing" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>