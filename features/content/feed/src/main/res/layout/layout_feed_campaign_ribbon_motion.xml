<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/feed_tag_product_background"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    app:layoutDescription="@xml/layout_feed_campaign_ribbon_motion_scene"
    tools:background="@drawable/bg_feed_campaign_ribbon_flashsale_gradient"
    tools:showPaths="true">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ty_feed_campaign_ribbon_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/timer_feed_campaign_ribbon"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Classic Lamp Fest"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ty_feed_campaign_ribbon_title_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/Unify_Static_White"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Classic Lamp Fest Second"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ty_feed_campaign_ribbon_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toTopOf="@id/pb_feed_campaign_ribbon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="small"
        tools:text="@string/feed_campaign_start_from_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ty_feed_campaign_ribbon_second_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toTopOf="@id/pb_feed_campaign_ribbon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="small"
        tools:text="@string/feed_campaign_start_from_label" />

    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/pb_feed_campaign_ribbon"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ty_feed_campaign_ribbon_subtitle"
        app:unify_progress_bar_height="6"
        app:unify_progress_bar_value="75" />

    <com.tokopedia.unifycomponents.timer.TimerUnifySingle
        android:id="@+id/timer_feed_campaign_ribbon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_feed_campaign_ribbon_icon"
        app:layout_constraintStart_toEndOf="@id/ty_feed_campaign_ribbon_title"
        app:layout_constraintTop_toTopOf="parent"
        app:timer_unify_single_variant="informative_alternate" />

    <!-- Used Icon Name : BELL | BELL_FILLED | CHEVRON_RIGHT-->
    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_feed_campaign_ribbon_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        app:icon_color_light_disabled="@color/Unify_Static_White"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_disabled="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_enable_state="true"
        app:icon_name="BELL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>