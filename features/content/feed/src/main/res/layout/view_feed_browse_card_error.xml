<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">

    <com.tokopedia.play_common.view.RoundedFrameLayout
        android:layout_width="120dp"
        android:layout_height="213dp"
        android:layout_marginEnd="8dp"
        android:background="@color/Unify_NN100"
        app:rfl_cornerRadius="8dp">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btn_retry1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:icon_name="RELOAD" />

    </com.tokopedia.play_common.view.RoundedFrameLayout>

    <com.tokopedia.play_common.view.RoundedFrameLayout
        android:layout_width="120dp"
        android:layout_height="213dp"
        android:layout_marginEnd="8dp"
        android:background="@color/Unify_NN100"
        app:rfl_cornerRadius="8dp">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btn_retry2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:icon_name="RELOAD" />

    </com.tokopedia.play_common.view.RoundedFrameLayout>

    <com.tokopedia.play_common.view.RoundedFrameLayout
        android:layout_width="120dp"
        android:layout_height="213dp"
        android:layout_marginEnd="8dp"
        android:background="@color/Unify_NN100"
        app:rfl_cornerRadius="8dp">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/btn_retry3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:icon_name="RELOAD" />

    </com.tokopedia.play_common.view.RoundedFrameLayout>

</LinearLayout>