<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="@dimen/dp_10">

    <ImageView
        android:id="@+id/shop_avatar"
        android:layout_width="@dimen/avatar_size_small"
        android:layout_height="@dimen/avatar_size_small"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/feed_container_rounded_corners_border"
        tools:src="@drawable/ic_check_green_24dp" />

    <com.tokopedia.gm.resource.GMImageView
        android:id="@+id/gold_merchant"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toEndOf="@+id/shop_avatar"
        android:layout_toRightOf="@+id/shop_avatar"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/official_store"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toEndOf="@+id/shop_avatar"
        android:layout_toRightOf="@+id/shop_avatar"
        android:textSize="@dimen/fontvs"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_official"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toEndOf="@id/shop_avatar"
        android:layout_toRightOf="@id/shop_avatar"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/black_70"
        android:textSize="@dimen/fontvs"
        android:textStyle="normal"
        tools:text="      Marowiajjfawioi saya adalah anak manusia wkwk ubah 1 produk " />

    <TextView
        android:id="@+id/shop_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toEndOf="@id/shop_avatar"
        android:layout_toRightOf="@id/shop_avatar"
        android:fontFamily="sans-serif"
        android:textColor="@color/black_38"
        android:textSize="@dimen/fontvvs"
        android:textStyle="normal"
        tools:text="Milik tanah air bangsa" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/shop_slogan"
        android:background="@color/grey_300" />
</RelativeLayout>