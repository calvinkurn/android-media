<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/dp_8"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_10"
    tools:targetApi="lollipop"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/shopAvatar"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:background="@drawable/bg_circle_gray_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible" />

    <com.tokopedia.gm.common.widget.GMImageView
        android:id="@+id/goldMerchant"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/shopName"
        app:layout_constraintStart_toEndOf="@+id/shopAvatar"
        app:layout_constraintTop_toTopOf="@+id/shopName"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/officialStore"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/shopName"
        app:layout_constraintStart_toEndOf="@+id/shopAvatar"
        app:layout_constraintTop_toTopOf="@+id/shopName"
        app:srcCompat="@drawable/ic_official"
        tools:ignore="ContentDescription"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lines="1"
        android:textColor="@color/black_70"
        app:layout_constraintBottom_toTopOf="@+id/shopSlogan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/officialStore"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Nike"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopSlogan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textColor="@color/black_38"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/shopAvatar"
        app:layout_constraintTop_toBottomOf="@+id/shopName"
        app:typographyType="small"
        app:typographyWeight="reguler"
        tools:text="12 October pukul 13.55 2018 akhir kiamat semua "
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>