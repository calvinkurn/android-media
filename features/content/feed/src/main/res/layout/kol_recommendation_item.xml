<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_128"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_1"
    app:cardCornerRadius="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <com.tokopedia.feedplus.view.customview.RoundedCornerImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/kol_avatar"
            android:layout_height="@dimen/kol_avatar"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/feed_container_circle_corners_border"
            tools:src="@drawable/ic_top_ads" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:text="Young Lex Young ekk"
            app:drawableLeftCompat="@drawable/ic_kol_badge"
            android:drawablePadding="@dimen/dp_4"
            tools:drawableLeft="@drawable/ic_kol_badge"/>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_8"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_10"
            android:textStyle="normal"
            tools:text="Artist" />

        <TextView
            android:id="@+id/follow_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/green_button_rounded_unify"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="@string/action_follow_english"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:textStyle="normal" />
    </LinearLayout>
</android.support.v7.widget.CardView>