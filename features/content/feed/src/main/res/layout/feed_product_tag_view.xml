<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0.7"
    android:background="@drawable/feed_tag_product_background"
    android:elevation="@dimen/unify_space_16"
    android:paddingStart="4dp"
    android:paddingTop="6dp"
    android:paddingEnd="8dp"
    android:paddingBottom="6dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/product_tag_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/feed_tag_product_icon_yellow_background"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="SHOPPING_BAG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_tag_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxWidth="240dp"
        android:maxLines="1"
        android:textColor="@color/Unify_NN0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_tag_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        tools:text="Xiaomi Redmi 32 GB Black"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>