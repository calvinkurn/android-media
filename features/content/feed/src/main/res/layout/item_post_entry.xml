<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow_bottom"
    android:elevation="4dp"
    android:paddingStart="16dp"
    android:paddingTop="10dp"
    android:paddingEnd="16dp"
    android:paddingBottom="@dimen/dp_32"
    tools:ignore="UnusedAttribute">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:contentDescription="null"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_loading_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:textColor="@color/Unify_N700_68"
        android:textSize="@dimen/sp_12"
        android:layout_marginRight="8dp"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@id/ivAvatar"
        app:layout_constraintRight_toLeftOf="@+id/btnCreatePost"
        app:layout_constraintTop_toTopOf="@id/ivAvatar"
        tools:text="Post sesuatu untuk tokomu, yuk! coba kalo00 panjang gimana ya? "/>

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btnCreatePost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="@string/string_btn_whitelist"
        android:textAllCaps="false"
        android:textColor="@color/Unify_N700_32"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:buttonCompatSize="small"
        app:buttonCompatType="primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
