<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@drawable/background_shadow_feed_bottom"
    android:elevation="@dimen/dp_4"
    android:padding="@dimen/dp_16"
    >

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_loading_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@id/ivAvatar"
        app:layout_constraintRight_toLeftOf="@+id/btnCreatePost"
        app:layout_constraintTop_toTopOf="@id/ivAvatar"
        tools:text="Post sesuatu untuk tokomu, yuk! coba kalo panjang gimana ya? "/>

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btnCreatePost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="@string/string_btn_whitelist"
        android:textAllCaps="false"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:buttonCompatSize="small"
        app:buttonCompatType="primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>
