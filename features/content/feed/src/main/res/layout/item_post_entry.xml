<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_12"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:src="@drawable/ic_loading_image"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:textColor="@color/black_70"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/ivPhoto"
            tools:text="Hi, Benny Alexandra" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="Post sesuatu untuk tokomu, yuk!" />

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btnSeeProfile"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:elevation="0dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:stateListAnimator="@null"
            android:text="@string/feed_see_profile"
            android:textAllCaps="false"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:buttonCompatSize="small"
            app:buttonCompatType="secondary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnCreateContent"
            app:layout_constraintTop_toBottomOf="@+id/ivPhoto"
            tools:targetApi="lollipop" />

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btnCreateContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:text="@string/string_btn_whitelist"
            android:textAllCaps="false"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            app:buttonCompatSize="small"
            app:buttonCompatType="primary"
            app:layout_constraintLeft_toRightOf="@+id/btnSeeProfile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPhoto" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>