<?xml version="1.0" encoding="utf-8"?><!--Name can be changed later to avoid misunderstanding after removing the old Feed-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Static_Black">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_feed_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_feed_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/feed_loading"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        app:loader_type="decorative_white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_feed_mute_unmute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>