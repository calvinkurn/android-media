<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="4dp"
    android:background="@color/Unify_Background"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_Background"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="UnusedAttribute"
        android:padding="8dp">

        <com.tokopedia.feedplus.view.customview.RoundedCornerImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/feed_detail_product"
            android:layout_height="@dimen/feed_detail_product"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:background="@drawable/feed_container_rounded_corners_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/productNameSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/productNameSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/productImage"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_3"
                tools:text="Enfagrow A+ Susu Anak 1-3 Tahun - Vanilla Enak Sekali Diminum Setiap hari" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <com.tokopedia.unifycomponents.Label
                    android:id="@+id/discountLabel"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    app:labelType="general_light_red"
                    tools:text="50%"
                    tools:visibility="visible"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/productTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#6D7588"
                    app:typographyType="small"
                    tools:text="Cashback 10%" />
            </LinearLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="Rp 3.121.500.121.500.121.500.121.500.121.500.121.500"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/star"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    app:icon_color_light_enable="@color/Unify_Y300"
                    app:icon_name="STAR_FILLED"
                    app:unify_image_type="rect" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:textColor="#6D7588"
                    app:typographyType="body_3"
                    tools:text="4.7" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:background="#6D7588" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/soldInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:textColor="#6D7588"
                    app:typographyType="body_3"
                    tools:text="Terjual 200" />
            </LinearLayout>

            <ImageView
                android:id="@+id/freeShipping"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:adjustViewBounds="false"
                android:contentDescription="@string/content_desc_free_shipping"
                android:scaleType="fitStart" />
        </LinearLayout>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/menu"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            app:icon_name="MENU_KEBAB_HORIZONTAL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>