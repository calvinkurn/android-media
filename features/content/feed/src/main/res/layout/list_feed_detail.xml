<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <com.tokopedia.feedplus.view.customview.RoundedCornerImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/feed_detail_product"
        android:layout_height="@dimen/feed_detail_product"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/feed_container_rounded_corners_border"
        tools:src="@drawable/product_no_photo_default" />

    <ImageView
        android:id="@+id/wishlist"
        android:layout_width="@dimen/user_ava"
        android:layout_height="@dimen/user_ava"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:elevation="5dp"
        app:srcCompat="@drawable/wishlist_faved" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toStartOf="@id/wishlist"
        android:layout_toLeftOf="@id/wishlist"
        android:layout_toEndOf="@+id/product_image"
        android:layout_toRightOf="@+id/product_image"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:maxLines="2"
        android:textColor="@color/black_70"
        tools:text="IKEA (R) Ringsjon - Tirai kamar  wadawdasd" />

    <TextView
        android:id="@id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/orange_red"
        tools:text="Rp 89.000" />

    <RatingBar
        android:id="@+id/product_rating"
        style="@style/RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="4" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_300" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/separator"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_toEndOf="@id/product_image"
        android:layout_toRightOf="@id/product_image"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/green_button_rounded"
            android:padding="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/fontvvs"
            tools:text="Cashback 4%"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/wholesale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toEndOf="@id/cashback"
            android:layout_toRightOf="@id/cashback"
            android:background="@drawable/cards_ui"
            android:padding="@dimen/dp_5"
            android:text="@string/wholesale"
            android:textSize="@dimen/fontvvs" />

        <TextView
            android:id="@+id/preorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toEndOf="@+id/wholesale"
            android:layout_toRightOf="@+id/wholesale"
            android:background="@drawable/cards_ui"
            android:padding="@dimen/dp_5"
            android:text="@string/preorder"
            android:textSize="@dimen/fontvvs"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/free_return"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_prod_size"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/preorder"
            android:layout_toRightOf="@id/preorder"
            app:srcCompat="@drawable/ic_badge_free_return" />

    </RelativeLayout>

</RelativeLayout>
