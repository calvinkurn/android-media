<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/placeholder_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="0.56"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        app:loader_type="rect"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/placeholder_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toTopOf="@id/ll_partner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/placeholder_img"
        app:loader_type="rect"
        app:typographyType="display_2"
        />

    <LinearLayout
        android:id="@+id/ll_partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/placeholder_title"
        >

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/placeholder_avatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:loader_type="circle"
            />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/placeholder_badge"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="6dp"
            app:loader_type="circle"
            />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/placeholder_partner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:loader_type="rect"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>