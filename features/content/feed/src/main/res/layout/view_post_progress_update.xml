<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/product_img"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:unify_image_corner_radius="0"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/progress_bar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        android:text="@string/cp_common_progress_bar_text"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintStart_toEndOf="@id/product_img"
        app:layout_constraintTop_toTopOf="@id/product_img"
        app:layout_constraintBottom_toBottomOf="@id/product_img"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Memproses..." />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/retry_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_GN500"
        android:text="@string/cp_common_coba_lagi_text"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/product_img"
        app:layout_constraintBottom_toBottomOf="@id/product_img"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="CobaLagi" />


    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/progress_bar"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:unify_progress_bar_height="6"
        app:unify_progress_bar_color_type="color_green"
        app:layout_constraintTop_toBottomOf="@id/product_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>