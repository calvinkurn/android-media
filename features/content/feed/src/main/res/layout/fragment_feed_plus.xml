<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/feed_bg_color"
    android:descendantFocusability="blocksDescendants">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_bottom">

        <TextView
            android:id="@+id/tab_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:foreground="?android:attr/selectableItemBackground"
            android:lineSpacingExtra="1sp"
            android:padding="@dimen/dp_16"
            android:textColor="@color/tkpd_main_green"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/title_my_feed" />

        <View
            android:layout_width="@dimen/tab_feed_indicator"
            android:layout_height="@dimen/dp_3"
            android:background="@color/tkpd_main_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tab_feed"
            app:layout_constraintStart_toStartOf="@id/tab_feed" />

        <TextView
            android:id="@+id/tab_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:foreground="?android:attr/selectableItemBackground"
            android:lineSpacingExtra="2sp"
            android:padding="@dimen/dp_16"
            android:textColor="@color/font_black_disabled_38"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@id/tab_feed"
            android:text="@string/title_explore" />
    </android.support.constraint.ConstraintLayout>

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:paddingTop="@dimen/dp_10"/>
    </com.tokopedia.core.customwidget.SwipeToRefresh>


    <LinearLayout
        android:id="@+id/layout_new_feed"
        android:layout_width="@dimen/label_new_feed_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/label_new_feed"
        android:elevation="@dimen/cardview_default_elevation"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_below="@id/tab_layout">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/arrow_size"
            android:layout_height="@dimen/arrow_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/ic_arrow_up_green" />

        <TextView
            android:id="@+id/new_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/you_have_new_feed"
            android:textColor="@color/medium_green"
            android:textSize="@dimen/fontvs" />
    </LinearLayout>

</RelativeLayout>