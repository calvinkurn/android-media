<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/feed_bg_color">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.tokopedia.searchbar.MainToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp" />

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appbar"
                android:background="@drawable/shadow_bottom"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tab_feed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/dp_16"
                    android:text="@string/title_my_feed"
                    android:textColor="@color/tkpd_main_green"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:layout_width="@dimen/tab_feed_indicator"
                    android:layout_height="@dimen/dp_3"
                    android:background="@color/tkpd_main_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tab_feed"
                    app:layout_constraintStart_toStartOf="@id/tab_feed" />

                <TextView
                    android:id="@+id/tab_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/dp_16"
                    android:text="@string/title_explore"
                    android:textColor="@color/font_black_disabled_38"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/tab_feed" />
            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.tokopedia.core.customwidget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:tag="swipe_to_refresh_feed_plus"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:clipToPadding="false"
                android:paddingTop="@dimen/dp_10"
                android:scrollbars="vertical"
                android:tag="feed_plus_list"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </com.tokopedia.core.customwidget.SwipeToRefresh>

        <LinearLayout
            android:id="@+id/layout_new_feed"
            android:layout_width="@dimen/label_new_feed_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/label_new_feed"
            android:elevation="@dimen/cardview_default_elevation"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/arrow_size"
                android:layout_height="@dimen/arrow_size"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                app:srcCompat="@drawable/ic_arrow_up_green" />

            <TextView
                android:id="@+id/new_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/you_have_new_feed"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/fontvs" />
        </LinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>