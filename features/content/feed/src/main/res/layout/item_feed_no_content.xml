<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Static_Black"
    android:padding="16dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_feed_no_content"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:icon_color_light_disabled="@color/Unify_Static_White"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_color_night_disabled="@color/Unify_Static_White"
        app:icon_color_night_enable="@color/Unify_Static_White"
        app:icon_name="IMAGE"
        app:layout_constraintBottom_toTopOf="@id/ty_feed_no_content_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ty_feed_no_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/feed_label_no_content_title"
        android:textAlignment="center"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toTopOf="@id/ty_feed_no_content_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_feed_no_content"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ty_feed_no_content_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/feed_label_no_content_subtitle"
        android:textAlignment="center"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toTopOf="@id/btn_show_other_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ty_feed_no_content_title"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="display_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_show_other_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/feed_label_no_content_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ty_feed_no_content_subtitle"
        app:layout_constraintVertical_chainStyle="packed"
        app:unifyButtonInvers="true"
        app:unifyButtonSize="medium"
        app:unifyButtonVariant="ghost" />

</androidx.constraintlayout.widget.ConstraintLayout>