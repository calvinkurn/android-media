<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/Unify_N0"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/unify_globalerrors_connection"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/message_retry"
        style="@style/TextView.Title.BlackSecondary"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/msg_network_error_1"
        android:textColor="@color/Unify_N700"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sub_message_retry"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/msg_network_error_2"
        android:textColor="@color/Unify_N150"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_retry"
        style="@style/Button.Submit.Green"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/title_try_again" />

</LinearLayout>
