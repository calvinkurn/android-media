<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/Unify_Static_Black">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_first_tab"
        android:layout_width="80dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@id/loader_login_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/loader_login_btn"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_second_tab"
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@id/loader_login_btn"
        app:layout_constraintStart_toEndOf="@id/loader_first_tab"
        app:layout_constraintTop_toTopOf="@id/loader_login_btn"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_live_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/loader_login_btn"
        app:layout_constraintTop_toTopOf="@id/loader_login_btn"
        app:loader_type="circle" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_login_btn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circle" />

</androidx.constraintlayout.widget.ConstraintLayout>