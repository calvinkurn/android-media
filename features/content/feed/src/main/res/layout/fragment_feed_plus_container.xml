<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Unify_Background">

    <FrameLayout
        android:id="@+id/feed_background_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        app:layout_scrollFlags="scroll|snap">

        <ImageView
            android:id="@+id/feed_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/feed_background_image"
            android:background="@drawable/gradient_feed"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:contentDescription="@string/feed_header_mask"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_searchbar_feed_header_mask"/>
    </FrameLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/feed_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:elevation="0dp">

        <View
            android:visibility="invisible"
            app:layout_collapseMode="pin"
            android:id="@+id/status_bar_bg"
            android:background="@color/Unify_G500"
            android:layout_width="match_parent"
            app:layout_scrollFlags="enterAlways"
            android:layout_height="@dimen/dp_25"/>

        <FrameLayout
            android:id="@+id/toolbarParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="enterAlways"/>

        <View
            android:visibility="invisible"
            app:layout_collapseMode="pin"
            android:id="@+id/status_bar_bg2"
            android:background="@color/Unify_G500"
            android:layout_width="match_parent"
            android:layout_marginTop="-5dp"
            android:layout_height="@dimen/dp_25"/>

        <com.tokopedia.unifycomponents.TabsUnify
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_scrollFlags="enterAlways"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorHeight="@dimen/dp_1"
            app:tabSelectedTextColor="@color/Unify_GN500"
            app:tabTextColor="@color/Unify_N700_32"
            app:tabTextAppearance="@style/FeedTabLayoutTextStyle"
            app:tabIndicatorColor="@color/Unify_GN500"
            android:theme="@style/ThemeOverlay.AppCompat.Light"/>

        <com.tokopedia.createpost.common.view.customview.PostProgressUpdateView
            android:id="@+id/postUpdateView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <include layout="@layout/partial_feed_loading"
            android:id="@+id/feed_loading"
            android:visibility="gone"/>

        <include layout="@layout/partial_feed_error"
            android:id="@+id/feed_error"
            android:visibility="gone"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


    <com.tokopedia.unifycomponents.floatingbutton.FloatingButtonUnify
        android:id="@+id/fab_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/Unify_GN500"
        app:fbType="circle"
        app:srcCompat="@drawable/ic_feed_post_plus"
        />

    <LinearLayout
        android:id="@+id/ll_fab_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/unify_space_16"
        android:background="@drawable/bg_fab_feed"
        >

        <com.tokopedia.iconunify.IconUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_lvl3"
            app:icon_color_light_enable="@color/Unify_Static_White"
            app:icon_color_night_enable="@color/Unify_Static_White"
            app:icon_name="ADD" />

<!--        <com.tokopedia.unifyprinciples.Typography-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Buat Konten"-->
<!--            />-->

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
