<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/gradient_profile"/>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:elevation="0dp">

        <com.tokopedia.searchbar.HomeMainToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|snap"
            app:screenName="/feed"/>

        <com.tokopedia.design.component.Tabs
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="visible"
            app:layout_scrollFlags="enterAlways"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorHeight="@dimen/dp_1"
            app:tabSelectedTextColor="@color/tkpd_main_green"
            app:tabTextColor="@color/font_black_disabled_38"
            app:tabTextAppearance="@style/Tabs.Secondary"
            app:tabIndicatorColor="@color/tkpd_main_green"
            android:theme="@style/ThemeOverlay.AppCompat.Light"/>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <include layout="@layout/partial_feed_loading"
            android:id="@+id/feed_loading"
            android:visibility="gone"/>

        <include layout="@layout/partial_feed_error"
            android:id="@+id/feed_error"
            android:visibility="gone"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/dp_2">

        <FrameLayout
            android:id="@+id/layout_grey_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_54">

        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_feed"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:visibility="gone"
            app:backgroundTint="@color/tkpd_main_green"
            app:srcCompat="@drawable/ic_feed_post_plus"
            tools:visibility="visible"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_feed_byme"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_above="@id/fab_feed"
            android:layout_marginBottom="@dimen/dp_8"
            android:visibility="invisible"
            app:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_feed_post_byme"/>


        <TextView
            android:id="@+id/text_fab_byme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/feed_create_post_byme"
            android:layout_toLeftOf="@id/fab_feed_byme"
            android:layout_alignTop="@id/fab_feed_byme"
            android:layout_alignBottom="@id/fab_feed_byme"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_feed_shop"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_above="@id/fab_feed_byme"
            android:layout_marginBottom="@dimen/dp_8"
            android:visibility="invisible"
            app:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_feed_post_shop"/>

        <TextView
            android:id="@+id/text_fab_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/feed_create_post_shop"
            android:layout_toLeftOf="@id/fab_feed_shop"
            android:layout_alignTop="@id/fab_feed_shop"
            android:layout_alignBottom="@id/fab_feed_shop"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
