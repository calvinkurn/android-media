<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Unify_Background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/feed_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:elevation="0dp">

        <View
            android:visibility="invisible"
            app:layout_collapseMode="pin"
            android:id="@+id/status_bar_bg"
            android:background="@color/Unify_G500"
            android:layout_width="match_parent"
            app:layout_scrollFlags="enterAlways"
            android:layout_height="25dp"/>

        <FrameLayout
            android:id="@+id/toolbarParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="enterAlways"/>

        <View
            android:visibility="invisible"
            app:layout_collapseMode="pin"
            android:id="@+id/status_bar_bg2"
            android:background="@color/Unify_G500"
            android:layout_width="match_parent"
            android:layout_marginTop="-5dp"
            android:layout_height="25dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/iv_feed_user"
                android:layout_width="@dimen/feed_space_24"
                android:layout_height="@dimen/feed_space_24"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/feed_space_16"
                android:layout_marginEnd="@dimen/feed_space_16"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tab_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unify_image_type="circle" />

            <com.tokopedia.unifycomponents.TabsUnify
                android:id="@+id/tab_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_feed_user"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="enterAlways"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/Unify_GN500"
                app:tabIndicatorHeight="@dimen/feed_space_1"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/Unify_GN500"
                app:tabTextAppearance="@style/FeedTabLayoutTextStyle"
                app:tabTextColor="@color/Unify_N700_32" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/feed_space_1"
                android:background="@color/Unify_NN300"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tab_layout"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tokopedia.createpost.common.view.customview.PostProgressUpdateView
            android:id="@+id/postUpdateView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <include layout="@layout/partial_feed_loading"
            android:id="@+id/feed_loading"
            android:visibility="gone"/>

        <include layout="@layout/partial_feed_error"
            android:id="@+id/feed_error"
            android:visibility="gone"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


    <com.tokopedia.unifycomponents.floatingbutton.FloatingButtonUnify
        android:id="@+id/fab_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/Unify_GN500"
        app:fbType="circle"
        app:srcCompat="@drawable/ic_feed_post_plus"
        />

    <com.tokopedia.feedcomponent.view.custom.FeedFloatingButton
        android:id="@+id/feed_floating_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/unify_space_16"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
