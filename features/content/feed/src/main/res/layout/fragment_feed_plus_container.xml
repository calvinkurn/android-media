<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/feed_background_frame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        app:layout_scrollFlags="scroll|snap">

        <ImageView
            android:id="@+id/feed_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_feed"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_searchbar_feed_header_mask"/>
    </FrameLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/feed_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:elevation="0dp">

        <View
            android:visibility="invisible"
            app:layout_collapseMode="pin"
            android:id="@+id/status_bar_bg"
            android:background="@color/green_600"
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|snap"
            android:layout_height="@dimen/dp_25"/>

        <FrameLayout
            android:id="@+id/toolbarParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|snap"/>

        <View
            android:visibility="invisible"
            app:layout_collapseMode="pin"
            android:id="@+id/status_bar_bg2"
            android:background="@color/green_600"
            android:layout_width="match_parent"
            android:layout_marginTop="-5dp"
            android:layout_height="@dimen/dp_25"/>

        <com.tokopedia.design.component.Tabs
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:visibility="visible"
            app:layout_scrollFlags="enterAlways"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorHeight="@dimen/dp_1"
            app:tabSelectedTextColor="@color/tkpd_main_green"
            app:tabTextColor="@color/font_black_disabled_38"
            app:tabTextAppearance="@style/FeedTabLayoutTextStyle"
            app:tabIndicatorColor="@color/tkpd_main_green"
            android:theme="@style/ThemeOverlay.AppCompat.Light"/>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <include layout="@layout/partial_feed_loading"
            android:id="@+id/feed_loading"
            android:visibility="gone"/>

        <include layout="@layout/partial_feed_error"
            android:id="@+id/feed_error"
            android:visibility="gone"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/layout_grey_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_54"
            android:visibility="gone">

        </FrameLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_feed"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:visibility="gone"
            app:backgroundTint="@color/tkpd_main_green"
            app:srcCompat="@drawable/ic_feed_post_plus"
            tools:visibility="visible"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_feed_byme"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_above="@id/fab_feed"
            android:layout_marginBottom="@dimen/dp_8"
            android:visibility="invisible"
            app:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_feed_post_byme"/>


        <TextView
            android:id="@+id/text_fab_byme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/feed_create_post_byme"
            android:layout_toLeftOf="@id/fab_feed_byme"
            android:layout_alignTop="@id/fab_feed_byme"
            android:layout_alignBottom="@id/fab_feed_byme"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_feed_shop"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_above="@id/fab_feed_byme"
            android:layout_marginBottom="@dimen/dp_8"
            android:visibility="invisible"
            app:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_feed_post_shop"/>

        <TextView
            android:id="@+id/text_fab_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/feed_create_post_shop"
            android:layout_toLeftOf="@id/fab_feed_shop"
            android:layout_alignTop="@id/fab_feed_shop"
            android:layout_alignBottom="@id/fab_feed_shop"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
