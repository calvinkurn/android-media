<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/for_you_state">
        <Constraint
            android:id="@+id/vp_feed_tab_items_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/v_menu_center"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/btn_feed_create_post"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/ty_feed_first_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toEndOf="@id/btn_feed_create_post"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:layout_goneMarginStart="16dp"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/ty_feed_second_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toEndOf="@id/ty_feed_first_tab"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/view_feed_tab_indicator"
            android:layout_width="16dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@id/ty_feed_first_tab"
            app:layout_constraintStart_toStartOf="@id/ty_feed_first_tab"
            app:layout_constraintTop_toBottomOf="@id/ty_feed_first_tab"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/container_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintEnd_toStartOf="@id/feed_user_profile_image"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/feed_user_profile_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/upload_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="@id/btn_feed_create_post"
            app:layout_constraintTop_toBottomOf="@id/view_feed_tab_indicator"
            app:layout_goneMarginStart="16dp"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/view_vertical_swipe_onboarding"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/feed_loading"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="decorative_white"
            app:visibilityMode="ignore" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/following_state">
        <Constraint
            android:id="@+id/vp_feed_tab_items_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/v_menu_center"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/btn_feed_create_post"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/ty_feed_first_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toEndOf="@id/btn_feed_create_post"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:layout_goneMarginStart="16dp"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/ty_feed_second_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toEndOf="@id/ty_feed_first_tab"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/view_feed_tab_indicator"
            android:layout_width="16dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@id/ty_feed_second_tab"
            app:layout_constraintStart_toStartOf="@id/ty_feed_second_tab"
            app:layout_constraintTop_toBottomOf="@id/ty_feed_second_tab"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/container_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintEnd_toStartOf="@id/feed_user_profile_image"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/feed_user_profile_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/upload_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toStartOf="@id/btn_feed_create_post"
            app:layout_constraintTop_toBottomOf="@id/view_feed_tab_indicator"
            app:layout_goneMarginStart="16dp"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/view_vertical_swipe_onboarding"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/feed_loading"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="decorative_white"
            app:visibilityMode="ignore" />
    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@+id/following_state"
        app:constraintSetStart="@+id/for_you_state" />
</MotionScene>