<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/v_menu_center"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/btn_feed_create_post"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore"
            />

        <Constraint
            android:id="@+id/ty_feed_first_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_goneMarginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toEndOf="@id/btn_feed_create_post"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/ty_feed_second_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toEndOf="@id/ty_feed_first_tab"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/view_feed_tab_indicator"
            android:layout_width="16dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@id/ty_feed_first_tab"
            app:layout_constraintStart_toStartOf="@id/ty_feed_first_tab"
            app:layout_constraintTop_toBottomOf="@id/ty_feed_first_tab"
            app:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/container_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintEnd_toStartOf="@id/feed_user_profile_image"
            app:visibilityMode="ignore"
            />

        <Constraint
            android:id="@+id/feed_user_profile_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/v_menu_center"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/btn_feed_create_post"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/ty_feed_first_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_goneMarginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toEndOf="@id/btn_feed_create_post"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/ty_feed_second_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintStart_toEndOf="@id/ty_feed_first_tab"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
        <Constraint
            android:id="@+id/view_feed_tab_indicator"
            android:layout_width="16dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@id/ty_feed_second_tab"
            app:layout_constraintStart_toStartOf="@id/ty_feed_second_tab"
            app:layout_constraintTop_toBottomOf="@id/ty_feed_second_tab"
            app:visibilityMode="ignore" />

        <Constraint
            android:id="@+id/container_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintEnd_toStartOf="@id/feed_user_profile_image"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore"/>
        <Constraint
            android:id="@+id/feed_user_profile_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/v_menu_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/v_menu_center"
            app:visibilityMode="ignore" />
    </ConstraintSet>
</MotionScene>