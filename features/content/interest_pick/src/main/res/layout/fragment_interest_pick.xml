<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:fontFamily="sans-serif"
            android:text="@string/interest_what_do_you_like"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="heading_4"
            app:typographyWeight="bold"
            tools:text="Kamu Suka Apa? Aku suka kamu hehe xD Kalau kamu gimana? Yang bener dong" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:fontFamily="sans-serif"
            android:text="@string/interest_change"
            android:textColor="@color/Unify_N700_44"
            android:visibility="gone"
            app:typographyType="body_3"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/interestList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginBottom="@dimen/spacing_lvl5"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:reverseLayout="false"
            app:spanCount="3"
            tools:listitem="@layout/item_interest_pick" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/saveInterest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:text="@string/interest_select_one"
            android:textAllCaps="false"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_N0"
        android:visibility="visible"
        tools:visibility="gone">

        <com.tokopedia.unifycomponents.ProgressBarUnify
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>

    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>
