<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.profile">

    <application>
        <activity
            android:name=".view.activity.ProfileActivity"
            android:label="@string/title_profile"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

            </intent-filter>
        </activity>
        <activity
            android:name=".following_list.view.activity.UserFollowerListActivity"
            android:label="@string/title_profile_follower"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".following_list.view.activity.FollowingListActivity"
            android:label="@string/title_profile_following"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>
</manifest>