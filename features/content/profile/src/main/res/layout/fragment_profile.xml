<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/card_shadow_top"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            tools:visibility="visible">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/footerOwn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="@dimen/dp_16"
                tools:visibility="visible">

                <com.tokopedia.design.component.ButtonCompat
                    android:id="@+id/addCuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_1"
                    android:text="@string/profile_add_rec"
                    android:textAllCaps="false"
                    android:textColor="#f531353b"
                    app:buttonCompatSize="medium"
                    app:buttonCompatType="secondary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/footerOwnSpace"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/footerOwnSpace"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toStartOf="@+id/shareProfile"
                    app:layout_constraintStart_toEndOf="@+id/addCuration" />

                <com.tokopedia.design.component.ButtonCompat
                    android:id="@+id/shareProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_1"
                    android:text="@string/profile_share_profile"
                    android:textAllCaps="false"
                    app:buttonCompatSize="medium"
                    app:buttonCompatType="primary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/footerOwnSpace"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/footerOthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_16"
                android:visibility="gone"
                tools:visibility="visible">

                <com.tokopedia.design.component.TextViewCompat
                    android:id="@+id/footerOthersText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_weight="1"
                    app:fontSize="micro"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textViewTheme="lightPrimary"
                    tools:text="Dapetin update-nya!" />

                <FrameLayout
                    android:id="@+id/footerOthersFollow"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@drawable/bg_af_rounded_corner_green"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <com.tokopedia.design.component.TextViewCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/profile_follow"
                        android:textColor="@color/Green_G500"
                        android:textStyle="bold"
                        app:fontSize="small" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/footerOthersShare"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/bg_af_rounded_corner_grey"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:visibility="gone"
                    tools:ignore="UnusedAttribute"
                    tools:visibility="visible">

                <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        app:srcCompat="@drawable/ic_share_grey_profile" />

                    <com.tokopedia.design.component.TextViewCompat
                        android:id="@+id/footerOthersShareText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="@string/title_share_en"
                        android:textColor="@color/color_like_comment_share"
                        android:visibility="gone"
                        app:fontSize="micro"
                        tools:textSize="@dimen/sp_12"
                        tools:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/mainView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_above="@id/footer"
            android:fitsSystemWindows="true">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:fitsSystemWindows="true"
                android:visibility="gone">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentScrim="@color/white"
                    app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                    android:fitsSystemWindows="true">

                    <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="parallax"
                        android:minHeight="@dimen/dp_100">

                        <ImageView
                            android:id="@+id/iv_image_collapse"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_profile"
                            android:alpha="0.82"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/toolbar_parallax"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/actionBarSize"
                                android:layout_marginTop="@dimen/dp_24"
                                android:orientation="horizontal"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_marginRight="@dimen/dp_16">

                                <ImageView
                                    android:id="@+id/iv_back_parallax"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_action_back"
                                    android:layout_gravity="center"
                                    />

                                <TextView
                                    android:id="@+id/tv_name_parallax"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_17"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="@dimen/dp_16"
                                    android:layout_gravity="center"/>

                                <ImageView
                                    android:id="@+id/iv_action_parallax"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:tint="@color/white"
                                    android:layout_marginLeft="@dimen/dp_16"
                                    tools:src="@drawable/ic_share_white"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp_16"
                                android:orientation="horizontal">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_af_circle_white"
                                    android:padding="@dimen/dp_2">

                                    <ImageView
                                        android:id="@+id/iv_profile"
                                        android:layout_width="@dimen/dp_64"
                                        android:layout_height="@dimen/dp_64" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="@dimen/dp_10">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/kolBadge"
                                            android:layout_width="@dimen/dp_20"
                                            android:layout_height="@dimen/dp_16"
                                            android:paddingEnd="@dimen/dp_4"
                                            android:paddingRight="@dimen/dp_4"
                                            android:src="@drawable/ic_kol_badge"
                                            android:visibility="gone"
                                            tools:ignore="RtlSymmetry"
                                            tools:visibility="visible"
                                            android:layout_gravity="center_vertical"/>

                                        <TextView
                                            android:id="@+id/tv_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/sp_17"
                                            android:textStyle="bold"
                                            android:textColor="@color/white"
                                            tools:text="Raisa Andriana"/>
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/followers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_12"
                                        android:textColor="@color/white"
                                        android:layout_marginTop="@dimen/dp_4"
                                        tools:text="200 follower"/>

                                    <com.tokopedia.design.component.ButtonCompat
                                        android:id="@+id/followBtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_8"
                                        android:text="@string/profile_follow"
                                        android:textAllCaps="false"
                                        android:visibility="gone"
                                        app:buttonCompatSize="small"
                                        app:buttonCompatType="white_transparent"
                                        tools:visibility="visible" />

                                    <com.tokopedia.design.component.ButtonCompat
                                        android:id="@+id/editButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_8"
                                        android:text="@string/profile_edit"
                                        android:textAllCaps="false"
                                        android:visibility="gone"
                                        app:buttonCompatSize="small"
                                        app:buttonCompatType="white_transparent"
                                        tools:visibility="visible" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_10"
                            android:background="@drawable/ic_rectangle"/>

                    </FrameLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:contentInsetLeft="0dp"
                        android:contentInsetStart="0dp"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        android:contentInsetRight="0dp"
                        android:contentInsetEnd="0dp"
                        app:contentInsetRight="0dp"
                        app:contentInsetEnd="0dp"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                        <LinearLayout
                            android:id="@+id/toolbar_menu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16">

                            <ImageView
                                android:id="@+id/iv_back"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_action_back"
                                android:layout_gravity="center"
                                android:tint="@color/black_70"
                                />

                            <TextView
                                android:id="@+id/tv_aff_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black_70"
                                android:textSize="@dimen/sp_17"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:id="@+id/iv_action"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:tint="#52565E"
                                tools:src="@drawable/ic_share_white"
                                />

                        </LinearLayout>
                    </android.support.v7.widget.Toolbar>

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>

            <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
                android:id="@+id/swipeToRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    app:reverseLayout="false" />

            </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>



        </android.support.design.widget.CoordinatorLayout>

        <FrameLayout
            android:id="@+id/loadingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
