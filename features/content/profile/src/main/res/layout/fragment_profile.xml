<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:reverseLayout="false" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dp_8">

            <TextView
                android:id="@+id/recommendationQuota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="7sp"
                android:textColor="@color/black_54"
                android:textSize="13sp"
                android:textStyle="normal"
                tools:text="@string/af_profile_rec_qutoa" />

            <com.tokopedia.design.component.ButtonCompat
                android:id="@+id/addRecommendation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/af_profile_add_rec"
                android:textAllCaps="false"
                app:buttonCompatSize="medium"
                app:buttonCompatType="primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/share"
                app:layout_constraintTop_toBottomOf="@id/recommendationQuota" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="@dimen/dp_40"
                android:layout_height="0dp"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_kol_badge"
                app:layout_constraintBottom_toBottomOf="@id/addRecommendation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/addRecommendation"
                tools:ignore="ContentDescription" />
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</ScrollView>