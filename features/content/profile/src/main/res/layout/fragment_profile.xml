<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipeToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:reverseLayout="false" />

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/card_shadow_top"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="gone"
        tools:visibility="visible">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/footerOwn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/recommendationQuota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="7sp"
                android:textColor="@color/black_54"
                android:textSize="13sp"
                android:textStyle="normal"
                tools:text="@string/profile_rec_qutoa" />

            <com.tokopedia.design.component.ButtonCompat
                android:id="@+id/addRecommendation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/profile_add_rec"
                android:textAllCaps="false"
                app:buttonCompatSize="medium"
                app:buttonCompatType="primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/shareOwn"
                app:layout_constraintTop_toBottomOf="@id/recommendationQuota" />

            <ImageView
                android:id="@+id/shareOwn"
                android:layout_width="@dimen/dp_40"
                android:layout_height="0dp"
                android:background="@drawable/bg_af_rounded_corner"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_share_grey"
                android:tint="@color/profile_share_color"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintBottom_toBottomOf="@id/addRecommendation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/addRecommendation"
                tools:ignore="ContentDescription" />
        </android.support.constraint.ConstraintLayout>

        <FrameLayout
            android:id="@+id/footerOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <com.tokopedia.design.component.ButtonCompat
                android:id="@+id/shareOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_1"
                android:text="@string/profile_share_profile"
                android:textAllCaps="false"
                app:buttonCompatSize="medium"
                app:buttonCompatType="secondary" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</RelativeLayout>