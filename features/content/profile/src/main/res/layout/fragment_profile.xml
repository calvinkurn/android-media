<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/card_shadow_top"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        tools:visibility="visible">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/footerOwn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <com.tokopedia.design.component.ButtonCompat
                android:id="@+id/addCuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_1"
                android:text="@string/profile_add_rec"
                android:textAllCaps="false"
                android:textColor="#f531353b"
                app:buttonCompatSize="medium"
                app:buttonCompatType="secondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/footerOwnSpace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/footerOwnSpace"
                android:layout_width="@dimen/dp_16"
                android:layout_height="0dp"
                app:layout_constraintEnd_toStartOf="@+id/shareProfile"
                app:layout_constraintStart_toEndOf="@+id/addCuration" />

            <com.tokopedia.design.component.ButtonCompat
                android:id="@+id/shareProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_1"
                android:text="@string/profile_share_profile"
                android:textAllCaps="false"
                app:buttonCompatSize="medium"
                app:buttonCompatType="primary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/footerOwnSpace"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/mainView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_above="@id/footer"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true"
            android:visibility="gone">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/white"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                android:fitsSystemWindows="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">

                    <ImageView
                        android:id="@+id/iv_image_collapse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_profile"
                        android:alpha="0.82"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_24"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16">

                            <ImageView
                                android:id="@+id/iv_back_parallax"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_action_back"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:id="@+id/tv_name_parallax"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_17"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:id="@+id/iv_action_parallax"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:tint="@color/white"
                                android:layout_marginLeft="@dimen/dp_16"
                                tools:src="@drawable/ic_share_white"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:padding="@dimen/dp_2">

                                <ImageView
                                    android:id="@+id/iv_profile"
                                    android:layout_width="@dimen/dp_64"
                                    android:layout_height="@dimen/dp_64" />
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/dp_10">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/kolBadge"
                                        android:layout_width="@dimen/dp_20"
                                        android:layout_height="@dimen/dp_16"
                                        android:paddingEnd="@dimen/dp_4"
                                        android:paddingRight="@dimen/dp_4"
                                        android:src="@drawable/ic_kol_badge"
                                        android:visibility="gone"
                                        tools:ignore="RtlSymmetry"
                                        tools:visibility="visible"
                                        android:layout_gravity="center_vertical"/>

                                    <TextView
                                        android:id="@+id/tv_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/sp_17"
                                        android:textColor="@color/white"
                                        tools:text="Raisa Andriana"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/followers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="@dimen/dp_4"
                                    tools:text="200 follower"/>

                                <com.tokopedia.design.component.ButtonCompat
                                    android:id="@+id/followBtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:text="@string/profile_follow"
                                    android:textAllCaps="false"
                                    android:visibility="gone"
                                    app:buttonCompatSize="small"
                                    app:buttonCompatType="white_transparent"
                                    tools:visibility="visible" />

                                <com.tokopedia.design.component.ButtonCompat
                                    android:id="@+id/editButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:text="@string/profile_edit"
                                    android:textAllCaps="false"
                                    android:visibility="gone"
                                    app:buttonCompatSize="small"
                                    app:buttonCompatType="white_transparent"
                                    tools:visibility="visible" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@drawable/gradient_profile">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_action_back"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/tv_aff_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/iv_action"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_16"
                            tools:src="@drawable/ic_share_white"
                            />

                    </LinearLayout>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
            android:id="@+id/swipeToRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:reverseLayout="false" />

        </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>


    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</RelativeLayout>
