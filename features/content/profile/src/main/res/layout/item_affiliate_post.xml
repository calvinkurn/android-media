<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_5">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:src="@drawable/ic_loading_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <View
        android:id="@+id/avatarSeparator"
        android:layout_width="@dimen/dp_16"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/avatar" />

    <ImageView
        android:id="@+id/kolBadge"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:src="@drawable/ic_kol_badge"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/avatarSeparator"
        app:layout_constraintTop_toTopOf="@+id/name"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_primary_70"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintStart_toEndOf="@+id/kolBadge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="Sadam Hussein" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_10"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/headerSeparator"
        app:layout_constraintStart_toEndOf="@+id/avatarSeparator"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="2 Menit yang lalu" />

    <View
        android:id="@+id/headerSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <android.support.v7.widget.CardView
        android:id="@+id/imageCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/headerSeparator"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/imageViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_loading_image"
                tools:src="@tools:sample/avatars"
                tools:visibility="visible" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_16"
                app:tabBackground="@drawable/affiliate_tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_10"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/imageCard"
        app:layout_constraintTop_toTopOf="@+id/imageCard"
        tools:text="Periode Komisi telah berakhir" />

    <View
        android:id="@+id/imageSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/imageCard" />

    <TextView
        android:id="@+id/goToProductBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="@dimen/dp_4"
        android:paddingStart="@dimen/dp_4"
        android:text="@string/profile_go_to_product"
        android:textColor="@color/medium_green"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/addImageBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addImageBtn"
        tools:ignore="RtlSymmetry" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/addImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_add_image"
        android:textAllCaps="false"
        android:visibility="gone"
        app:buttonCompatSize="medium"
        app:buttonCompatType="secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSeparator"
        tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>