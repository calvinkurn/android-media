<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_top_bottom"
    android:orientation="vertical"
    android:padding="@dimen/dp_5">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_4"
            android:src="@drawable/ic_loading_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <View
            android:id="@+id/avatarSeparator"
            android:layout_width="@dimen/dp_8"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/avatar" />

        <ImageView
            android:id="@+id/kolBadge"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:src="@drawable/ic_kol_badge"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintStart_toEndOf="@+id/avatarSeparator"
            app:layout_constraintTop_toTopOf="@+id/name"
            tools:ignore="RtlSymmetry"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/font_black_primary_70"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/time"
            app:layout_constraintStart_toEndOf="@+id/kolBadge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="Sadam Hussein" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/black_38"
            android:textSize="@dimen/sp_10"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatarSeparator"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text="2 Menit yang lalu" />

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.profile.view.widget.WrapContentViewPager
            android:id="@+id/imageViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageViewPager"
            android:layout_marginBottom="@dimen/dp_4"
            app:tabBackground="@drawable/affiliate_tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageViewPager"
            android:layout_alignStart="@id/imageViewPager"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/affiliate_info_rounded"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/dp_8"
            android:textColor="@color/black_54"
            android:textSize="@dimen/sp_10"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="Periode Komisi telah berakhir"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewPager"
            android:layout_marginBottom="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goToProductBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_4"
                android:paddingStart="@dimen/dp_4"
                android:paddingTop="@dimen/dp_8"
                android:text="@string/profile_go_to_product"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                tools:ignore="RtlSymmetry" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/profile_footer_space"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/addImageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/affiliate_rounded_corner"
                android:elevation="@dimen/dp_0"
                android:fontFamily="sans-serif-medium"
                android:foreground="?android:attr/selectableItemBackground"
                android:lineSpacingExtra="4sp"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_8"
                android:text="@string/profile_add_image"
                android:textAllCaps="false"
                android:textColor="@color/black_54"
                android:textSize="@dimen/sp_12"
                android:textStyle="normal"
                android:visibility="gone"
                tools:targetApi="lollipop"
                tools:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>