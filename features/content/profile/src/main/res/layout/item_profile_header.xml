<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16"
    android:background="@drawable/shadow_bottom">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/profile_avatar_header"
        android:layout_height="@dimen/profile_avatar_header"
        android:src="@drawable/ic_loading_image"
        tools:src="@tools:sample/avatars" />

    <View
        android:id="@+id/avatarSeparator"
        android:layout_width="@dimen/dp_16"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/avatar" />

    <ImageView
        android:id="@+id/kol_badge"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:src="@drawable/ic_kol_badge"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintStart_toEndOf="@id/avatarSeparator"
        app:layout_constraintTop_toTopOf="@+id/name"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_primary_70"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/followers"
        app:layout_constraintStart_toEndOf="@id/kol_badge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Sadam Hussein" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatarSeparator"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="0 Followers â€¢ 10 Following" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/avatar"/>
</android.support.constraint.ConstraintLayout>