<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow_bottom"
    android:padding="@dimen/dp_16">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/profile_avatar_header"
        android:layout_height="0dp"
        android:src="@drawable/ic_loading_image"
        app:layout_constraintBottom_toTopOf="@+id/bottomSpace"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@tools:sample/avatars" />

    <FrameLayout
        android:id="@+id/changeAvatar"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/bg_af_circle_white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="@id/avatar"
        tools:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_af_camera" />
    </FrameLayout>

    <View
        android:id="@+id/avatarSeparator"
        android:layout_width="@dimen/dp_16"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomSpace"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/kolBadge"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:src="@drawable/ic_kol_badge"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/avatarSeparator"
        app:layout_constraintTop_toTopOf="@+id/name"
        tools:ignore="RtlSymmetry"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@color/font_black_primary_70"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/followers"
        app:layout_constraintStart_toEndOf="@+id/kolBadge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Sadam Hussein" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/black_54"
        android:textSize="@dimen/sp_12"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/followBtn"
        app:layout_constraintStart_toEndOf="@+id/avatarSeparator"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="0 Followers â€¢ 10 Following"
        tools:visibility="visible" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/followBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/profile_follow"
        android:textAllCaps="false"
        android:visibility="gone"
        app:buttonCompatSize="small"
        app:buttonCompatType="primary"
        app:layout_constraintBottom_toTopOf="@id/bottomSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatarSeparator"
        app:layout_constraintTop_toBottomOf="@+id/followers"
        tools:visibility="visible" />

    <View
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>