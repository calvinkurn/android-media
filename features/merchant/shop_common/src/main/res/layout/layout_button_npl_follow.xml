<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:visibility="gone"
    tools:visibility="visible"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shop_followers_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/follow_button_npl_etalase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_followers_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@+id/shop_followers_btn"
        app:layout_constraintStart_toEndOf="@+id/shop_followers_image"
        app:layout_constraintTop_toTopOf="@+id/shop_followers_image"
        app:typographyType="heading_5"
        tools:text="Eksklusif untuk Followers" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shop_followers_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/shop_followers_title"
        app:layout_constraintStart_toStartOf="@+id/shop_followers_title"
        app:layout_constraintTop_toBottomOf="@+id/shop_followers_title"
        app:typographyType="body_3"
        tools:text="Yuk, follow untuk beli barang ini! asdasdasdasdasdasd" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/shop_followers_btn"
        android:layout_width="@dimen/dp_80"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="5dp"
        android:text="@string/merchant_shop_common_follow_label"
        app:layout_constraintBottom_toBottomOf="@+id/shop_followers_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shop_followers_title" />

</androidx.constraintlayout.widget.ConstraintLayout>