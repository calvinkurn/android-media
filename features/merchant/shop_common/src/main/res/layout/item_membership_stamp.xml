<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/membership_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_14"
            android:padding="10dp"
            android:textColor="@color/Unify_N700"
            app:layout_constraintBottom_toTopOf="@+id/circle_stamp_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="Kupon Diskon 50%" />

        <FrameLayout
            android:id="@+id/circle_stamp_1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_14"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintBottom_toTopOf="@+id/btn_claim"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/txt_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/Unify_N150"
                app:typographyType="heading_6" />

            <ImageView
                android:id="@+id/img_stamp_1"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:contentDescription="@string/membership_stamp_1"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Unify_N150"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_2"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_1"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1" />

        <FrameLayout
            android:id="@+id/circle_stamp_2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_3"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_1"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/txt_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/Unify_N150"
                app:typographyType="heading_6"

                />

            <ImageView
                android:id="@+id/img_stamp_2"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:contentDescription="@string/membership_stamp_2"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Unify_N150"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_2"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_3"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_2"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_2" />

        <FrameLayout
            android:id="@+id/circle_stamp_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_2"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/txt_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/Unify_N150"
                app:typographyType="heading_6"

                />

            <ImageView
                android:id="@+id/img_stamp_3"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:contentDescription="@string/membership_stamp_3"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Unify_N150"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_3"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_4"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_3"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_3" />

        <FrameLayout
            android:id="@+id/circle_stamp_4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_3"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/txt_number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/Unify_N150"
                app:typographyType="heading_6"

                />

            <ImageView
                android:id="@+id/img_stamp_4"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:contentDescription="@string/membership_stamp_4"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Unify_N150"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_4"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_5"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_4"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_4" />

        <FrameLayout
            android:id="@+id/circle_stamp_5"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_4"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/txt_number_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/Unify_N150"
                app:typographyType="heading_6" />

            <ImageView
                android:id="@+id/img_stamp_5"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:contentDescription="@string/membership_stamp_5"
                android:visibility="gone" />
        </FrameLayout>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_claim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Klaim Kupon" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>