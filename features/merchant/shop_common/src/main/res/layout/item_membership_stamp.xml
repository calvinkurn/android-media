<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/membership_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/circle_stamp_1"
            tools:text="Kupon Diskon 50%"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            android:textColor="@color/black"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dp_14"
            />

        <FrameLayout
            android:id="@+id/circle_stamp_1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_claim"
            android:background="@drawable/bg_circle_blue"
            android:layout_marginBottom="@dimen/dp_14"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_2"
            app:layout_constraintHorizontal_chainStyle="spread">

        <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/blue_circle_stamp"
                android:text="1"
                app:typographyType="heading_6"
                />

            <ImageView
                android:id="@+id/img_stamp_1"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:visibility="gone"
                />
        </FrameLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/blue_circle_stamp"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_1"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_2"
            />

        <FrameLayout
            android:id="@+id/circle_stamp_2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_1"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_3"
            >

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/blue_circle_stamp"
                android:text="2"
                app:typographyType="heading_6"

                />

            <ImageView
                android:id="@+id/img_stamp_2"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:visibility="gone"
                />
        </FrameLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/blue_circle_stamp"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_2"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_2"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_2"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_3"
            />

        <FrameLayout
            android:id="@+id/circle_stamp_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_2"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_4"
            >

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/blue_circle_stamp"
                android:text="3"
                app:typographyType="heading_6"

                />

            <ImageView
                android:id="@+id/img_stamp_3"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:visibility="gone"
                />
        </FrameLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/blue_circle_stamp"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_3"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_3"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_3"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_4"
            />

        <FrameLayout
            android:id="@+id/circle_stamp_4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_3"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_5"
            >

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/blue_circle_stamp"
                android:text="4"
                app:typographyType="heading_6"

                />

            <ImageView
                android:id="@+id/img_stamp_4"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:visibility="gone"
                />
        </FrameLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/blue_circle_stamp"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_4"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_4"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_4"
            app:layout_constraintEnd_toStartOf="@+id/circle_stamp_5"
            />

        <FrameLayout
            android:id="@+id/circle_stamp_5"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            app:layout_constraintStart_toEndOf="@+id/circle_stamp_4"
            app:layout_constraintTop_toTopOf="@+id/circle_stamp_1"
            app:layout_constraintBottom_toBottomOf="@+id/circle_stamp_1"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                app:typographyType="heading_6"
                android:textColor="@color/blue_circle_stamp"
                android:text="5"
                />

            <ImageView
                android:id="@+id/img_stamp_5"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:visibility="gone"
                />
        </FrameLayout>

        <Button
            android:id="@+id/btn_claim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Klaim Kupon"
            style="@style/Button.Submit.Green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>