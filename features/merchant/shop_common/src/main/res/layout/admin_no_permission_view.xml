<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_admin_no_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/guideline_no_permission"
        app:layout_constraintBottom_toTopOf="@id/tv_admin_no_permission_title"
        app:srcCompat="@drawable/ic_admin_no_permission"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_admin_no_permission_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginHorizontal="@dimen/admin_no_permission_title_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="heading_3"
        app:layout_constraintTop_toBottomOf="@id/iv_admin_no_permission"
        app:layout_constraintBottom_toTopOf="@id/tv_admin_no_permission_desc"
        tools:text="Kamu tidak punya izin untuk mengakses halaman Penjualan"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_admin_no_permission_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginHorizontal="@dimen/admin_no_permission_desc_margin"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_2"
        app:layout_constraintTop_toBottomOf="@id/tv_admin_no_permission_title"
        app:layout_constraintBottom_toTopOf="@id/btn_admin_no_permission"
        tools:text="Hubungi pemilik toko untuk bisa mengakses halaman Penjualan, ya."/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_admin_no_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_no_permission_action"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        app:unifyButtonType="main"
        app:unifyButtonSize="large"
        app:layout_constraintBottom_toBottomOf="@id/guideline_no_permission"
        app:layout_constraintTop_toBottomOf="@id/tv_admin_no_permission_desc"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_no_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>