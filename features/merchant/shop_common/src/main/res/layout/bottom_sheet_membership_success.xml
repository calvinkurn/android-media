<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_frame_id"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/bs_membership_title"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center"
        android:minLines="2"
        android:text="@string/bs_membership_desc"
        app:typographyType="heading_6"
        android:layout_marginBottom="@dimen/dp_40"/>

    <com.tokopedia.unifycomponents.Buttons
        android:id="@+id/btn_check_my_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/Button.Submit.Green"
        android:text="@string/bs_button_txt"
        android:layout_marginBottom="@dimen/dp_16"/>

</LinearLayout>