<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/multiple_bundle_products_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_bundle_product_multiple"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bundle_product_multiple_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_bundle_product_multiple"
        app:layout_constraintEnd_toEndOf="@id/iv_bundle_product_multiple"
        app:layout_constraintTop_toBottomOf="@id/iv_bundle_product_multiple"
        android:layout_marginTop="8dp"
        android:gravity="center"
        tools:text="Rinso Matic Professional ..."
        app:typographyType="body_3"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_NN950"
        />

</androidx.constraintlayout.widget.ConstraintLayout>