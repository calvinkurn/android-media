<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/icon_shop"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:visibility="gone"
        android:layout_marginStart="4dp"
        app:unify_image_corner_radius="0"
        app:layout_constraintBottom_toBottomOf="@+id/tv_shop_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_shop_name" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toEndOf="@id/icon_shop"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Banana Indonesia" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bundle_name_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        tools:text="Home Care Ramadhan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:layout_marginStart="4dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bundle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Home Care Ramadhan"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_shop_name"
        app:typographyType="display_3"
        android:textColor="@color/Unify_NN600"
        android:layout_marginStart="4dp"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bundle_preorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@id/tv_bundle_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_bundle_name"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Terjual 100 paket" />

</androidx.constraintlayout.widget.ConstraintLayout>