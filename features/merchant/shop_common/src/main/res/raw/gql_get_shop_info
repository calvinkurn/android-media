query getShopInfo($shopIds: [Int!]!, $fields: [String!]!, $shopDomain: String){
    shopInfoByID(input: {
        shopIDs: $shopIds,
        fields: $fields,
        domain: $shopDomain
    }){
        result {
            shopCore{
                shopID
                description
                domain
                name
                tagLine
                url
            }
            closedInfo{
                closedNote
                reason
                until
            }
            createInfo{
                shopCreated
                openSince
            }
            shopAssets{
                avatar
                cover
            }
            shipmentInfo{
                isAvailable
                code
                shipmentID
                image
                name
                product{
                    isAvailable
                    productName
                    shipProdID
                    uiHidden
                }
                isPickup
                maxAddFee
                awbStatus
            }
            shopLastActive
            location
            shopTerms
            isAllowManage
            isOpen
            isOwner
            goldOS {
                isGold
                isGoldBadge
                isOfficial
            }
            favoriteData{
                totalFavorite
                alreadyFavorited
            }
            statusInfo {
                shopStatus
                statusMessage
                statusTitle
            }
            bbInfo {
                bbName
                bbNameEN
                bbDesc
                bbDescEN
            }
            topContent{
                topURL
                bottomURL
            }
        }
        error {
            message
        }
    }
}