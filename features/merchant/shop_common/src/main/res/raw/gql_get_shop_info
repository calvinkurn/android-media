query getShopInfo($shopIds: [Int!]!, $fields: [String!]!, $shopDomain: String, $source: String){
    shopInfoByID(input: {
        shopIDs: $shopIds,
        fields: $fields,
        domain: $shopDomain,
        source: $source
    }){
        result {
                    shopCore{
                        shopID
                        description
                        domain
                        name
                        tagLine
                        url
                    }
                    freeOngkir{
                        isActive
                        imgURL
                    }
                    closedInfo{
                        closedNote
                        reason
                        until
                    }
                    createInfo{
                        openSince
                    }
                    shopAssets{
                        avatar
                        cover
                    }
                    shopLastActive
                    location
                    isAllowManage
                    statusInfo {
                        shopStatus
                        statusMessage
                        statusTitle
                    }
                }
    }
}