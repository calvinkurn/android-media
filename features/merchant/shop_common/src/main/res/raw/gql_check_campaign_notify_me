mutation checkCampaignNotifyMe($campaignId:Int!, $productId:Int!, $action:Action!, $source:String!){
  checkCampaignNotifyMe(params: {
    campaign_id: $campaignId,
    product_id: $productId,
    action: $action,
    source: $source
  }) {
      product_id
      campaign_id
      success
      error_message
    }
}