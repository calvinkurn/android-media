<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typographyVariantValueLevel1Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/linkAddVariantValueLevel1"
        android:contentDescription="@string/content_desc_linkAddVariantValueLevel1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:gravity="center"
        android:text="@string/action_add"
        android:textColor="@color/Unify_G500"
        app:layout_constraintBottom_toBottomOf="@+id/typographyVariantValueLevel1Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVariantValueLevel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/body_2"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/layout_lvl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typographyVariantValueLevel1Title" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/body_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewVariantValueLevel1" />

</androidx.constraintlayout.widget.ConstraintLayout>