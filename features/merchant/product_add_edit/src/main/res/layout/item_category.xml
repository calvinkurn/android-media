<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/itemCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvCategoryNameParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivCategoryParent"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_weight="0"
            app:srcCompat="@drawable/product_add_edit_ic_chevron_down" />

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:id="@+id/rbCategory"
            android:layout_marginEnd="-9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/spacingLevelCategory"
        android:visibility="gone"
        android:background="@color/Unify_N100"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLevelCategory"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>