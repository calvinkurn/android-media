<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/itemCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvCategoryNameParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700"
            android:layout_weight="1" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ivCategoryParent"
            app:icon_name="CHEVRON_DOWN"
            app:icon_color_light_enable="@color/Unify_NN900"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="0"
            android:layout_marginEnd="9dp"/>

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:id="@+id/rbCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/spacingLevelCategory"
        android:visibility="gone"
        android:background="@color/Unify_N100"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLevelCategory"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>