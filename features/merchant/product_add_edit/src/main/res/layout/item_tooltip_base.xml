<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="@dimen/spacing_lvl2"
    android:paddingBottom="@dimen/spacing_lvl4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvNumber"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N0"
        android:background="@drawable/green_circle"
        android:textAlignment="center"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        android:layout_marginStart="@dimen/spacing_lvl5" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2"
        android:layout_marginLeft="@dimen/spacing_lvl5"
        android:layout_marginStart="@dimen/spacing_lvl5" />

</LinearLayout>