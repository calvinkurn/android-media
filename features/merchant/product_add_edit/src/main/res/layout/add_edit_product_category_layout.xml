<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_category_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_product_category_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_asterisk"
        android:textColor="@color/Red_R600_96"
        app:layout_constraintLeft_toRightOf="@id/tv_product_category_header"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <RadioGroup
        android:id="@+id/rg_product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_category_header">

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Fashion Wanita/Batik Wanita/Dress"
            tools:text="Fashion Pria/Batik Pria/Kemeja" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/dp_12" />

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fashion Wanita/Batik Wanita/Dress"
            tools:text="Fashion Wanita/Batik Wanita/Dress" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/dp_12" />

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fashion Wanita/Batik Wanita/Dress"
            tools:text="Fashion Pria/Batik Pria/Kemeja" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl4" />
    </RadioGroup>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_choose_other_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:text="@string/action_choose_other_category"
        android:textColor="@color/Green_G500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_product_category"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

</androidx.constraintlayout.widget.ConstraintLayout>