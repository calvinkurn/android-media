<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_layout_tips"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/add_edit_product_partial_tooltip_card_scene">

    <LinearLayout
        android:id="@+id/layout_tips"
        android:background="@drawable/yellow_y100_rounded_corner"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iv_tips_bulb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/product_add_edit_ic_tips_bulb" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_tips_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="@string/lorem"
            android:textColor="@color/Unify_N500"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />

    </LinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>