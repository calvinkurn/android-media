<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/add_edit_product_partial_tooltip_card_scene">

    <LinearLayout
        android:id="@+id/layout_tips"
        android:background="@drawable/yellow_y100_rounded_corner"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl7">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_tips_bulb"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            app:srcCompat="@drawable/product_add_edit_ic_tips_bulb" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_11"
            android:text="@string/preview_label_add_product_variant_tips"
            android:textColor="@color/Unify_N500"
            app:typographyType="body_3"
            app:typographyWeight="reguler" />

    </LinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>