<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_condition_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_product_condition_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_asterisk"
        android:textColor="@color/Red_R600_96"
        app:layout_constraintLeft_toRightOf="@id/tv_product_condition_header"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <RadioGroup
        android:id="@+id/rg_product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_condition_header">

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baru"
            tools:text="Baru" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/dp_12" />

        <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bekas"
            tools:text="Bekas" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_lvl1"
            android:layout_marginTop="@dimen/spacing_lvl4" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>