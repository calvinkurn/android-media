<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutParent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typographyRecommendationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:text="@string/label_variant_custom_manage"
        android:textColor="@color/Unify_NN600"
        app:typographyType="body_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVariantSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/layout_lvl0" />

</LinearLayout>