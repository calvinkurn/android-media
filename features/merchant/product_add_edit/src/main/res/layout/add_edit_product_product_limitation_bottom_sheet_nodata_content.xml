<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingHorizontal="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title_product_limitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_product_limitation_bottomsheet_info_nodata"
        android:textColor="@color/Neutral_N600"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/close"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_product_limitation" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_learn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/action_learn"
        app:unifyButtonVariant="text"
        app:unifyButtonType="alternate"
        app:layout_constraintTop_toBottomOf="@+id/btn_dismiss" />

</androidx.constraintlayout.widget.ConstraintLayout>