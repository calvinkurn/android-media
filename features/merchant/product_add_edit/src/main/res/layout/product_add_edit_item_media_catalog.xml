<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.imagepicker.picker.gallery.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_catalog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/iv_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selected_image_overlay"
        android:visibility="gone"
        tools:visibility="visible"/>

</com.tokopedia.imagepicker.picker.gallery.widget.SquareFrameLayout>