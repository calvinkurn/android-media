<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerAddEditDescriptionFragmentNoInputVariant"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_no_variant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seller_migration_add_edit_no_variant_title"
        android:textColor="@color/Unify_NN950_44"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4" />

    <com.tokopedia.unifycomponents.Label
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/seller_migration_label_seller_app_only"
        app:labelType="general_light_green"
        app:layout_constraintBottom_toBottomOf="@id/tv_no_variant_title"
        app:layout_constraintLeft_toRightOf="@id/tv_no_variant_title"
        app:layout_constraintStart_toEndOf="@id/tv_no_variant_title"
        app:layout_constraintTop_toTopOf="@id/tv_no_variant_title" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvNoVariantDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/Unify_NN950_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_no_variant_title"
        app:typographyType="body_3"
        tools:text="@string/seller_migration_add_edit_no_variant_description" />

</androidx.constraintlayout.widget.ConstraintLayout>