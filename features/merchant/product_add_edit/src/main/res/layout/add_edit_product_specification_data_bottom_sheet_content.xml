<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.SearchBarUnify
        android:id="@+id/searchBarData"
        app:search_bar_placeholder="@string/label_specification_search"
        app:search_bar_clearable="true"
        app:search_bar_show_icon="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.list.ListUnify
            android:id="@+id/listUnifyData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-16dp"
            android:choiceMode="singleChoice" />

    </ScrollView>

</LinearLayout>