<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_product_name_header"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_asterisk"
        android:textColor="@color/Unify_R600_96"
        app:layout_constraintLeft_toRightOf="@id/tv_product_name_header"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tfu_product_name"
        android:contentDescription="@string/content_desc_tfu_product_name"
        android:theme="@style/TextDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name_header"
        app:text_field_counter="@integer/max_product_name_length"
        app:text_field_label="@string/detail_label_product_name"
        app:text_field_message="@string/label_add_product_name_tips" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/lu_product_name"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:translationY="@dimen/dp_20"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tfu_product_name" />

    <LinearLayout
        android:id="@+id/product_name_rec_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tfu_product_name">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/dp_12" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl5"
            android:layout_marginRight="@dimen/spacing_lvl5"
            android:layout_marginBottom="@dimen/dp_12" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl8"
            android:layout_marginRight="@dimen/spacing_lvl8"
            android:layout_marginBottom="@dimen/dp_12" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/layout_lvl9"
            android:layout_marginRight="@dimen/layout_lvl9" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_name_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tfu_product_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
