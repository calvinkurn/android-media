<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_796"
        android:text="@string/label_description_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="heading_4"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/textFieldDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:text_field_label="@string/label_description_placeholder"
        app:text_field_counter="2000"
        app:text_field_input_type="text"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDescriptionTips"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl7"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@drawable/yellow_y100_rounded_corner"
        app:layout_constraintTop_toBottomOf="@id/textFieldDescription"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivDescriptionTipsBulb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_tips_bulb" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvProductPhotoTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="@string/label_add_product_description_tips"
            app:layout_constraintLeft_toRightOf="@id/ivDescriptionTipsBulb"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>