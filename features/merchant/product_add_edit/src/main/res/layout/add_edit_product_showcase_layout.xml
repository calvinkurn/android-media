<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_showcases_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_product_showcase"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_add_product_showcases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_add_product_showcase"
        android:textColor="@color/Unify_G500"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_showcases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:text="@string/label_product_showcase_tips"
        android:textColor="@color/Unify_N700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_product_showcases"
        app:typographyType="body_2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reload_product_showcase_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/show_case_retry_bg"
        android:padding="@dimen/dp_12"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_product_showcases">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_refresh_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_refresh_showcases"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            app:layout_constraintBottom_toBottomOf="@id/tv_refresh_message"
            app:layout_constraintRight_toLeftOf="@+id/tv_reload_showcases_button"
            app:layout_constraintTop_toTopOf="@id/tv_refresh_message"
            app:srcCompat="@drawable/ic_replay" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_reload_showcases_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_refresh_showcases"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/fontSize_lvl2"
            app:layout_constraintBottom_toBottomOf="@id/tv_refresh_message"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_refresh_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>