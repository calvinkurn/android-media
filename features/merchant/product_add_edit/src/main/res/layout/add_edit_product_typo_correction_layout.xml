<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chips_hide"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl4"
        app:chipType="disabled"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.iconunify.IconUnify
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl2"
        app:icon_name="CLOSE"
        app:layout_constraintBottom_toBottomOf="@+id/chips_hide"
        app:layout_constraintEnd_toEndOf="@+id/chips_hide"
        app:layout_constraintStart_toStartOf="@+id/chips_hide"
        app:layout_constraintTop_toTopOf="@+id/chips_hide" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_typos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="@+id/chips_hide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chips_hide"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>