<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvVariantHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_variant_title"
        android:textColor="@color/grey_796"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="heading_4"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvVariantHeaderSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/label_variant_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVariantHeaderTitle"
        app:typographyType="body_2"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvAddVariant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:textColor="@color/unify_G500"
        android:text="@string/label_add_variant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVariantHeaderSubtitle"
        app:typographyType="body_2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutVariantTips"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl7"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:background="@drawable/yellow_y100_rounded_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddVariant">

        <ImageView
            android:id="@+id/ivVariantTipsBulb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_tips_bulb" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvVariantPhotoTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="@string/label_add_product_variant_tips"
            app:layout_constraintLeft_toRightOf="@id/ivVariantTipsBulb"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>