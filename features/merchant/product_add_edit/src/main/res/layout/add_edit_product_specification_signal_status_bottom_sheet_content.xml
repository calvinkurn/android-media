<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivSignalStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="170dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTipsNumber1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="21dp"
        android:textAlignment="center"
        android:textColor="@color/Unify_Static_White"
        android:background="@drawable/product_add_edit_circle"
        android:backgroundTint="@color/Unify_GN500"
        android:text="1"
        app:typographyType="heading_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSignalStatus" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTipsText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/lorem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTipsNumber1"
        app:layout_constraintTop_toTopOf="@id/tvTipsNumber1"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTipsNumber2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="@color/Unify_Static_White"
        android:background="@drawable/product_add_edit_circle"
        android:backgroundTint="@color/Unify_GN500"
        android:text="2"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTipsText1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTipsText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/lorem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTipsNumber2"
        app:layout_constraintTop_toTopOf="@id/tvTipsNumber2"
        app:typographyType="body_3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnLearn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/action_specification_learn"
        app:layout_constraintTop_toBottomOf="@+id/tvTipsText2" />

</androidx.constraintlayout.widget.ConstraintLayout>