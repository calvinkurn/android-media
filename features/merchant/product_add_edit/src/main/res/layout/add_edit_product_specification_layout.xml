<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_specification_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_product_specification"
        android:textColor="@color/Unify_NN950"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_add_product_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_specification_add"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/label_product_specification_tips"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_add_product_specification"
        app:typographyType="body_2" />

    <com.tokopedia.product.addedit.tooltip.presentation.TooltipCardView
        android:id="@+id/tooltipSpecificationRequired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:text="@string/label_specification_signal_status_required"
        app:layout_constraintTop_toBottomOf="@id/tv_product_specification" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reload_product_specification_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/show_case_retry_bg"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_specification_header">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_refresh_message_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_refresh_specification"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3" />

        <com.tokopedia.iconunify.IconUnify
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_refresh_message_specification"
            app:layout_constraintRight_toLeftOf="@+id/tv_reload_specification_button"
            app:layout_constraintTop_toTopOf="@id/tv_refresh_message_specification"
            app:icon_name="RELOAD"
            app:icon_color_light_enable="@color/Unify_GN500" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_reload_specification_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_specification_refresh"
            android:textColor="@color/Unify_GN500"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_refresh_message_specification"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_refresh_message_specification" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>