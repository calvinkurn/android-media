<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/spacing_lvl8">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerUnify2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_variant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_14"
        android:text="@string/label_add_product_variant"
        android:textColor="@color/Unify_N700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        android:layout_marginStart="@dimen/dp_1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_start_add_edit_product_variant"
        android:contentDescription="@string/content_desc_tv_start_add_edit_product_variant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:text="@string/action_change"
        android:textColor="@color/Unify_G500"
        app:layout_constraintBottom_toBottomOf="@+id/tv_product_variant"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_product_variant"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        android:layout_marginEnd="@dimen/dp_16" />

    <com.tokopedia.product.addedit.tooltip.presentation.TooltipCardView
        android:id="@+id/add_product_variant_tips_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/dp_12"
        app:text="@string/preview_label_add_product_variant_tips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_start_add_edit_product_variant"/>

</androidx.constraintlayout.widget.ConstraintLayout>