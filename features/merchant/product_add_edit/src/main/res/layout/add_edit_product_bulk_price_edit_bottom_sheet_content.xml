<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bulk_edit_price_bottomsheet_helper"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tfu_product_price"
        android:contentDescription="@string/content_desc_tfu_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:layout_marginBottom="@dimen/layout_lvl3"
        app:text_field_input_type="number"
        app:text_field_label="@string/detail_label_product_price"
        app:text_field_label_static="true"
        app:text_field_message="@string/label_add_product_price_tips"
        app:text_field_prepend_text="Rp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:background="@drawable/product_add_edit_rect_green_solid"
        android:text="@string/action_bulk_edit_price"
        android:textAllCaps="false"
        android:textColor="@color/Unify_N0" />

</LinearLayout>