<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/variantTypeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        android:textColor="@color/Unify_NN950"
        tool:text="Hitam" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerUnify3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/variantTypeName" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconEdit"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:paddingEnd="16dp"
        android:paddingStart="0dp"
        app:icon_name="EDIT"
        app:icon_color_light_enable="@color/Unify_NN950"
        app:icon_color_light_disabled="@color/Unify_NN300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iconDelete"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconDelete"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:paddingEnd="16dp"
        android:paddingStart="0dp"
        app:icon_name="DELETE"
        app:icon_color_light_enable="@color/Unify_NN950"
        app:icon_color_light_disabled="@color/Unify_NN300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>