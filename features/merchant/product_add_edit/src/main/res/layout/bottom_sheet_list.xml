<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/bannerTooltip"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:visibility="gone"
        android:layout_marginHorizontal="16dp"/>

    <com.tokopedia.unifycomponents.SearchBarUnify
        android:id="@+id/searchBarData"
        app:search_bar_placeholder="@string/label_specification_search"
        app:search_bar_clearable="true"
        app:search_bar_show_icon="false"
        android:visibility="gone"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp" />

</LinearLayout>