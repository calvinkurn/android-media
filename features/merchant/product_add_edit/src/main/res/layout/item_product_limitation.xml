<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardUnify"
        android:layout_width="@dimen/product_limitation_action_item_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingTop="40dp"
        app:card_type="border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/Unify_N700"
                app:typographyType="heading_4" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/Unify_N700_44"
                app:typographyType="body_3" />

            <com.tokopedia.unifycomponents.DividerUnify
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_white_background"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:text="@string/action_product_limitation_item"
                android:textColor="@color/Unify_G500"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

        </LinearLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_card"
        android:src="@drawable/product_add_edit_ic_tips_bulb"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>