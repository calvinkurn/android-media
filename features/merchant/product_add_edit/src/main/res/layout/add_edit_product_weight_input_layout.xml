<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_layout_shipment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_shipment_detail"
            android:textColor="@color/Neutral_N700_96"
            app:typographyType="heading_4" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/Red_R600"
            app:typographyType="heading_4" />

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_shipment_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:text="@string/label_shipment_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_shipment_title"
        app:typographyType="body_3" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_weight_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:text_field_label_static="true"
        app:text_field_label="@string/label_unit"
        app:text_field_append_drawable_icon_2="@drawable/unify_chips_ic_chevron_normal"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tf_weight_amount"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipment_subtitle"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tf_weight_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:text_field_label_static="true"
        app:text_field_label="@string/label_weight"
        app:text_field_input_type="number"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@id/tf_weight_unit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shipment_subtitle" />

</androidx.constraintlayout.widget.ConstraintLayout>