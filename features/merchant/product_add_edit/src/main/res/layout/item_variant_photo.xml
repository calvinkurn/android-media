<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/Unify_N50"
            app:layout_constraintBottom_toBottomOf="@+id/ivVariantPhoto"
            app:layout_constraintEnd_toEndOf="@+id/ivVariantPhoto"
            app:layout_constraintStart_toStartOf="@+id/ivVariantPhoto"
            app:layout_constraintTop_toTopOf="@+id/ivVariantPhoto" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivVariantPhoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_plus_gray"
            app:unify_image_corner_radius="0"
            app:unify_image_placeholder="@color/Unify_N50" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/typographyVariantPhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivVariantPhoto"
            app:typographyType="body_3"
            tools:text="@string/lorem" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>