<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        android:text="@string/label_variant_type"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/body_3"
        android:text="@string/label_variant_type_desc"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVariantType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl1" />

    <com.tokopedia.product.addedit.common.customview.AddItemButton
        android:id="@+id/buttonAddVariantType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:addItemButtonText="@string/action_variant_custom_add" />

</LinearLayout>