<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lvl4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        android:text="@string/label_variant_type"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_4"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:text="@string/label_variant_type_desc"
        app:typographyType="body_3"
        android:textColor="@color/light_N700_68"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVariantType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>