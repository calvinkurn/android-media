<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:unifyButtonSize="medium"
        app:unifyButtonVariant="ghost" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_apply"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btn_price"
        app:layout_constraintEnd_toEndOf="@+id/btn_price"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circular" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_price_recommendation_apply"
        android:textColor="@color/Unify_GN500"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_price"
        app:layout_constraintEnd_toEndOf="@+id/btn_price"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:icon_name="CHECK"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_color_night_enable="@color/Unify_GN500"
        app:layout_constraintBottom_toBottomOf="@+id/btn_price"
        app:layout_constraintEnd_toEndOf="@+id/btn_price"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_price_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_price"
        app:typographyType="small" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_price_description"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_description"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_price_description"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_price_recommendation_next"
        android:textColor="@color/Unify_GN500"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>