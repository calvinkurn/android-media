<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingRight="@dimen/spacing_lvl4">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_shipment_insurance"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintBottom_toBottomOf="@id/switch_insurance"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/switch_insurance"
        app:typographyType="heading_4" />

    <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
        android:id="@+id/switch_insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bold="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:text="@string/label_shipment_insurance_description"
        android:textColor="@color/light_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/switch_insurance"
        app:layout_constraintTop_toBottomOf="@id/switch_insurance"
        app:typographyType="body_3" />

</androidx.constraintlayout.widget.ConstraintLayout>