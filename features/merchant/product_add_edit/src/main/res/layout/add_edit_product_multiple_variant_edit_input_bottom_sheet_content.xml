<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tfuPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_field_input_type="number"
        app:text_field_label="Harga"
        app:text_field_prepend_text="Rp" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tfuStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_field_input_type="number"
        app:text_field_label="Stok"
        app:text_field_prepend_text="Rp" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tfuSku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_field_label="SKU (Stock Keeping Unit)" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/buttonApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:text="Terapkan" />

</LinearLayout>