<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivValidationSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivValidationError"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivValidationSuccess" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvErrorDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ivValidationError"
            app:layout_constraintStart_toEndOf="@+id/ivValidationError"
            app:layout_constraintTop_toTopOf="@+id/ivValidationError"
            app:typographyType="body_2"
            android:text="@string/title_product_title_validation_bottomsheet_error" />

        <com.tokopedia.product.addedit.detail.presentation.customview.TitleCorrectionView
            android:id="@+id/tvTitleCorrection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivValidationError"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/titleValidationSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/title_product_title_validation_bottomsheet_success"
            android:textColor="@color/Unify_N700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleCorrection"
            app:typographyType="body_2" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iconPoint1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="2dp"
            app:icon_color_light_enable="@color/Unify_G500"
            app:icon_enable_state="true"
            app:icon_name="CHECK_CIRCLE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleValidationSuccess" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textPoint1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:text="@string/label_product_title_validation_bottomsheet_point1"
            android:textColor="@color/Unify_N700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconPoint1"
            app:layout_constraintTop_toTopOf="@+id/iconPoint1"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/descPoint1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:text="@string/label_product_title_validation_bottomsheet_point1_desc"
            android:textColor="@color/Unify_N700"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textPoint1"
            app:layout_constraintTop_toBottomOf="@+id/textPoint1"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:textAlignment="textStart"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/descPoint1"
            app:layout_constraintTop_toBottomOf="@+id/descPoint1"
            app:unifyButtonSize="small"
            app:unifyButtonType="alternate"
            app:unifyButtonVariant="ghost" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iconPoint2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="2dp"
            app:icon_color_light_enable="@color/Unify_G500"
            app:icon_enable_state="true"
            app:icon_name="CHECK_CIRCLE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDelete" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textPoint2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:text="@string/label_product_title_validation_bottomsheet_point2"
            android:textColor="@color/Unify_N700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconPoint2"
            app:layout_constraintTop_toTopOf="@+id/iconPoint2"
            app:typographyType="body_2" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iconPoint3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="2dp"
            app:icon_color_light_enable="@color/Unify_G500"
            app:icon_enable_state="true"
            app:icon_name="CHECK_CIRCLE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textPoint2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textPoint3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:text="@string/label_product_title_validation_bottomsheet_point3"
            android:textColor="@color/Unify_N700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconPoint3"
            app:layout_constraintTop_toTopOf="@+id/iconPoint3"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_product_title_validation_bottomsheet_description"
            android:textColor="@color/Unify_N700_44"
            app:layout_constraintTop_toBottomOf="@+id/textPoint3"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_product_title_validation_bottomsheet_dismiss"
            app:unifyButtonSize="medium"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>