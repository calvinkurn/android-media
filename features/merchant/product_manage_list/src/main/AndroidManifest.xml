<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.product.manage">

    <application
        android:allowBackup="true"
        android:label="@string/app_name">

        <activity
            android:name="com.tokopedia.product.manage.feature.list.view.activity.ProductManageActivity"
            android:label="@string/title_activity_manage_product"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.White">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_product_manage_list"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.product.manage.oldlist.view.activity.ProductManageFilterActivity"
            android:label="@string/title_sort_by"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tokopedia.product.manage.oldlist.view.activity.ProductManageSortActivity"
            android:label="@string/title_filter_but"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.tokopedia.product.manage.feature.filter.presentation.activity.ProductManageFilterExpandActivity"
            android:label="@string/filter_expand_activity"
            android:screenOrientation="portrait" />

    </application>
</manifest>
