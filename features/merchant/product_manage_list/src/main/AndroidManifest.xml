<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.product.manage">

    <application
        android:allowBackup="true"
        android:label="@string/app_name">
        <activity
            android:name="com.tokopedia.product.manage.feature.stockreminder.view.activity.StockReminderActivity"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_stock_reminder"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.product.manage.oldlist.view.activity.ProductManageActivity"
            android:label="@string/title_activity_manage_product"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:path="@string/path_product_manage_list"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.product.manage.oldlist.view.activity.ProductManageFilterActivity"
            android:label="@string/title_sort_by"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name="com.tokopedia.product.manage.oldlist.view.activity.ProductManageSortActivity"
            android:label="@string/title_filter_but"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
    </application>

</manifest>