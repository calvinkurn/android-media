    <application
        android:allowBackup="true"
        android:label="@string/app_name">

        <activity
            android:name=".view.activity.ProductManageActivity"
            android:label="@string/title_activity_manage_product"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.activity.ProductManageSortActivity"
            android:label="@string/title_sort_by"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.ProductManageFilterActivity"
            android:label="@string/title_filter_but"
            android:screenOrientation="portrait" />

    </application>
</manifest>
