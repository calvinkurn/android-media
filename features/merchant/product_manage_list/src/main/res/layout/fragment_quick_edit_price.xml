<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/quick_edit_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl4"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/quick_edit_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_expand_save_button"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl3"
        app:layout_constraintTop_toBottomOf="@id/quick_edit_price"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>