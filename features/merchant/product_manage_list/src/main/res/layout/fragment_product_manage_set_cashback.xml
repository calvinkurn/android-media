<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/set_cashback_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/set_cashback_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tickerType="announcement"
        app:tickerShapeType="full"
        app:closeButtonVisibility="gone"
        app:titleText="@string/product_manage_set_cashback_ticker_title"
        app:descriptionText="@string/product_manage_set_cashback_ticker_info"
        app:layout_constraintTop_toBottomOf="@id/set_cashback_header" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/set_cashback_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_cashback_ticker" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/bottomsheet_button_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toTopOf="@id/btn_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/product_manage_white"
        android:paddingTop="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_submit_cashback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_expand_save_button"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>