<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/product_manage_search_bar_height"
        android:layout_marginTop="@dimen/product_manage_page_shimmer_vertical_spacing_long"
        android:layout_marginBottom="@dimen/product_manage_page_shimmer_vertical_spacing"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintTop_toTopOf="parent"
        app:corners="16" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/filterChip1"
        android:layout_width="@dimen/product_manage_filter_chip_simmer_width_medium"
        android:layout_height="@dimen/product_manage_filter_chip_shimmer_height"
        android:layout_marginTop="@dimen/product_manage_page_shimmer_vertical_spacing"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:corners="32" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/filterChip2"
        android:layout_width="@dimen/product_manage_filter_chip_simmer_width_short"
        android:layout_height="@dimen/product_manage_filter_chip_shimmer_height"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        app:layout_constraintLeft_toRightOf="@id/filterChip1"
        app:layout_constraintTop_toTopOf="@id/filterChip1"
        app:corners="32" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/filterChip3"
        android:layout_width="@dimen/product_manage_filter_chip_simmer_width_long"
        android:layout_height="@dimen/product_manage_filter_chip_shimmer_height"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        app:layout_constraintLeft_toRightOf="@id/filterChip2"
        app:layout_constraintTop_toTopOf="@id/filterChip1"
        app:corners="32" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/filterChip4"
        android:layout_width="@dimen/product_manage_filter_chip_simmer_width_short"
        android:layout_height="@dimen/product_manage_filter_chip_shimmer_height"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        app:layout_constraintTop_toTopOf="@id/filterChip1"
        app:layout_constraintLeft_toRightOf="@id/filterChip3"
        app:corners="32" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/textFilterCount"
        android:layout_width="@dimen/product_manage_filter_count_shimmer_width"
        android:layout_height="@dimen/product_manage_text_shimmer_height"
        android:layout_marginTop="@dimen/product_manage_page_shimmer_vertical_spacing_long"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/filterChip1"
        app:corners="16" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/textMultipleSelect"
        android:layout_width="@dimen/product_manage_mutli_select_shimmer_width"
        android:layout_height="@dimen/layout_lvl3"
        app:layout_constraintBottom_toBottomOf="@id/textFilterCount"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintTop_toTopOf="@id/textFilterCount"
        app:corners="16" />

    <include
        layout="@layout/layout_product_manage_list_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/product_manage_list_shimmer_vertical_spacing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFilterCount" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/spacing_lvl4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/spacing_lvl4" />
</androidx.constraintlayout.widget.ConstraintLayout>