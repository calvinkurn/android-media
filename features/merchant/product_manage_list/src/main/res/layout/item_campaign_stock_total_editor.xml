<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_campaign_stock_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_manage_campaign_stock_stock_amount"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/qte_campaign_stock_amount"
        app:layout_constraintBottom_toBottomOf="@id/qte_campaign_stock_amount"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_campaign_stock_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_G500"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:typographyType="heading_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_campaign_stock_amount"
        tools:text="3 promosi"
        tools:visibility="visible"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/emptyStockInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_manage_stock_info_description"
        android:textColor="@color/Unify_N300"
        android:lines="2"
        android:visibility="gone"
        android:gravity="center_vertical"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_campaign_stock_count"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible"/>

    <com.tokopedia.unifycomponents.QuantityEditorUnify
        android:id="@+id/qte_campaign_stock_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tv_campaign_stock_amount"
        app:layout_constraintBottom_toBottomOf="@id/tv_campaign_stock_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3" />
</androidx.constraintlayout.widget.ConstraintLayout>