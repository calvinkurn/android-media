<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_chat_input">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_rounded_chat_input">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_success_addproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/popup_label_static"
            android:textColor="@color/Unify_N700"
            app:typographyType="heading_2"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_static_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_success_addproduct"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="@string/popup_label_static_second"
            android:textColor="@color/Unify_N700"
            app:typographyType="heading_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_static_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_static_1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/popup_label_tips_trick"
            app:typographyType="body_1"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_tips_trick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_static_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_25"
            android:text="@string/popup_label_tips_trick_second"
            app:typographyType="body_1" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/filterSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tips_trick"
            android:layout_marginBottom="10dp"
            android:text="@string/courier_option" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filterSubmitButton"
            android:text="@string/product_option"
            app:unifyButtonVariant="ghost"
            app:unifyButtonType="alternate"/>

    </RelativeLayout>

</LinearLayout>

