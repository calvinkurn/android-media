<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_chat_input">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20"
        android:background="@drawable/bg_rounded_chat_input">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_success_addproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/popup_label_static"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontSize="subHeadline" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_static_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_success_addproduct"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="dijual!"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontSize="subHeadline" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_static_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_static_1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/popup_label_tips_trick"
            app:fontSize="title" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_tips_trick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_static_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_25"
            android:text="baru di sini."
            app:fontSize="title" />

        <Button
            android:id="@+id/filterSubmitButton"
            style="@style/Button.Submit.Green.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tips_trick"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/courier_option" />

        <Button
            android:id="@+id/btn_product_list"
            style="@style/Button.Submit.White.Border.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filterSubmitButton"
            android:text="@string/product_option" />

    </RelativeLayout>



</LinearLayout>

