<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="0dp">

        <com.tokopedia.topads.freeclaim.view.widget.TopAdsWidgetFreeClaim
            android:id="@+id/topads_free_claim_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:visibility="gone"
            app:layout_scrollFlags="scroll"
            tools:visibility="visible" />

        <com.tokopedia.design.text.SearchInputView
            android:id="@+id/search_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            app:layout_scrollFlags="scroll|snap|enterAlways" />

        <LinearLayout
            android:id="@+id/container_bulk_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|snap|enterAlways">

            <CheckBox
                android:id="@+id/bulk_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/checkBoxStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/product_manage_select_all" />

            <TextView
                android:id="@+id/bulk_count_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="end"
                android:text="@string/product_manage_bulk_count" />
        </LinearLayout>

        <View
            android:id="@+id/line_check_box"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <com.tokopedia.design.button.BottomActionView
        android:id="@+id/bottom_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_20"
        app:bav_1_display="true"
        app:bav_2_display="true"
        app:bav_icon_1="@drawable/ic_sort"
        app:bav_icon_2="@drawable/ic_bottom_action_filter"
        app:bav_label_1="@string/sort"
        app:bav_label_2="@string/filter"
        app:layout_anchor="@id/recycler_view"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_behavior="com.tokopedia.seller.common.widget.QuickReturnFooterBehavior" />


    <LinearLayout
        android:id="@+id/container_btn_bulk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/dp_10">

        <Button
            android:id="@+id/btn_bulk_edit"
            style="@style/Button.Submit.Green.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Ubah" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>