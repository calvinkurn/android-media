<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/mainContainer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnMultiEdit"
        android:layout_alignParentTop="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/tickerBroadcastChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:closeButtonVisibility="visible"
                app:tickerType="information"
                app:tickerShapeType="full" />

            <com.tokopedia.topads.freeclaim.view.widget.TopAdsWidgetFreeClaim
                android:id="@+id/topAdsWidgetFreeClaim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/product_manage_vertical_spacing"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.tokopedia.design.text.SearchInputView
                android:id="@+id/searchBar"
                android:clickable="true"
                android:focusable="true"
                android:textSize="@dimen/fontSize_lvl2"
                android:textColorHint="@color/Unify_N200"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:layout_marginRight="@dimen/spacing_lvl2"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:background="@drawable/bg_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:siv_search_icon="@drawable/unify_search_ic"
                app:layout_scrollFlags="scroll|snap"/>

            <com.tokopedia.sortfilter.SortFilter
                android:id="@+id/tabSortFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/product_manage_horizontal_spacing"
                android:paddingRight="@dimen/product_manage_horizontal_spacing"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:layout_marginBottom="@dimen/spacing_lvl3"
                android:visibility="gone"
                app:layout_scrollFlags="scroll|snap"
                app:sort_filter_relationship="AND"
                app:sort_filter_type="advanced" />

            <LinearLayout
                android:id="@+id/multiSelectContainer"
                android:paddingRight="@dimen/product_manage_container_spacing"
                android:paddingEnd="@dimen/product_manage_container_spacing"
                android:paddingLeft="@dimen/product_manage_container_spacing"
                android:paddingStart="@dimen/product_manage_container_spacing"
                android:layout_marginBottom="@dimen/product_manage_vertical_spacing"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_anchor="@id/app_bar_layout"
                app:layout_scrollFlags="scroll">

                <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
                    android:id="@+id/checkBoxSelectAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_lvl3"
                    android:layout_marginRight="@dimen/spacing_lvl3"
                    android:checked="false"
                    android:visibility="gone"
                    app:indeterminate="false" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/textProductCount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    app:typographyType="body_3"
                    app:typographyWeight="reguler" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/textMultipleSelect"
                    android:contentDescription="@string/content_desc_textMultipleSelect"
                    android:textColor="@color/Unify_G500"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    app:typographyType="heading_6"
                    app:typographyWeight="bold"
                    android:text="@string/product_manage_multiple_select" />
            </LinearLayout>

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
        </com.google.android.material.appbar.AppBarLayout>

        <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:scrollbars="vertical" />
        </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnMultiEdit"
        android:contentDescription="@string/content_desc_btnMultiEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/Unify_N0"
        android:visibility="gone"
        app:cardElevation="@dimen/layout_lvl2"
        app:contentPaddingBottom="@dimen/spacing_lvl3"
        app:contentPaddingLeft="@dimen/spacing_lvl4"
        app:contentPaddingRight="@dimen/spacing_lvl4"
        app:contentPaddingTop="@dimen/spacing_lvl3"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.UnifyButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_manage_button_multi_edit"
            app:unifyButtonSize="large" />
    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/pageLoading"
        layout="@layout/layout_product_manage_shimmer"
        tools:visibility="gone" />

    <FrameLayout
        android:id="@+id/interceptor"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>