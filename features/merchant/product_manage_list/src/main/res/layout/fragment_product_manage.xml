<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="0dp">

        <com.tokopedia.topads.freeclaim.view.widget.TopAdsWidgetFreeClaim
            android:id="@+id/topads_free_claim_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_scrollFlags="scroll"/>

        <com.tokopedia.design.text.SearchInputView
            android:id="@+id/search_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            app:layout_scrollFlags="scroll|snap|enterAlways" />

            <LinearLayout
                android:id="@+id/container_bulk_check_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:orientation="horizontal"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|snap|enterAlways">

                <CheckBox
                    android:id="@+id/bulk_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/checkBoxStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/product_manage_select_all"/>

                <TextView
                    android:id="@+id/bulk_count_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/product_manage_bulk_count"/>
            </LinearLayout>

        <View
            android:id="@+id/line_check_box"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300"/>


    </android.support.design.widget.AppBarLayout>

    <com.tokopedia.core.customwidget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:clipToPadding="false" />

    </com.tokopedia.core.customwidget.SwipeToRefresh>

    <com.tokopedia.design.button.BottomActionView
        android:id="@+id/bottom_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_20"
        app:bav_icon_1="@drawable/ic_sort"
        app:bav_icon_2="@drawable/ic_bottom_action_filter"
        app:bav_1_display="true"
        app:bav_label_1="@string/sort"
        app:bav_label_2="@string/filter"
        app:bav_2_display="true"
        app:layout_anchor="@id/recycler_view"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_behavior="com.tokopedia.seller.common.widget.QuickReturnFooterBehavior" />

    <LinearLayout
        android:id="@+id/container_btn_bulk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_bulk_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Button.Submit.Green.Full"
            tools:text="Ubah"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>