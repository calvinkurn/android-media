<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/product_manage_campaign_stock_ticker_custom_margin"
    android:paddingStart="@dimen/product_manage_campaign_stock_ticker_custom_margin"
    android:paddingEnd="@dimen/product_manage_campaign_stock_ticker_custom_margin"
    android:paddingRight="@dimen/product_manage_campaign_stock_ticker_custom_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/product_manage_campaign_stock_item_padding">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_campaign_stock"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:closeButtonVisibility="gone"
        app:tickerShapeType="loose"/>

</androidx.constraintlayout.widget.ConstraintLayout>