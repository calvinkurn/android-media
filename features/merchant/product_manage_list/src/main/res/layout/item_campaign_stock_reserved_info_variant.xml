<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_campaign_reserved_info_variant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_campaign_reserved_info_variant_count"
        app:layout_constraintEnd_toStartOf="@id/tv_campaign_reserved_info_variant_stock"
        tools:text="Merah | S"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_campaign_reserved_info_variant_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_GN500"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        app:typographyType="heading_6"
        app:layout_constraintStart_toStartOf="@id/tv_campaign_reserved_info_variant_name"
        app:layout_constraintTop_toBottomOf="@id/tv_campaign_reserved_info_variant_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="3 promosi"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_campaign_reserved_info_variant_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_manage_campaign_stock_stock"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toStartOf="@id/tv_campaign_reserved_info_variant_stock_count"
        app:layout_constraintTop_toTopOf="@id/tv_campaign_reserved_info_variant_stock_count"
        app:layout_constraintBottom_toBottomOf="@id/tv_campaign_reserved_info_variant_stock_count"
        app:typographyType="display_3"
        app:typographyWeight="reguler"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_campaign_reserved_info_variant_stock_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="10"/>

</androidx.constraintlayout.widget.ConstraintLayout>