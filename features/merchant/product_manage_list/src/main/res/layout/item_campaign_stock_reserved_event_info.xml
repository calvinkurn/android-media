<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/product_manage_campaign_stock_item_padding"
        android:paddingBottom="@dimen/product_manage_campaign_stock_item_padding"
        android:paddingLeft="@dimen/layout_lvl2"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingRight="@dimen/layout_lvl2"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_campaign_stock_event_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelType="general_light_red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Diskon Toko"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_campaign_stock_event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/product_manage_campaign_stock_event_name_margin"
            android:layout_marginStart="@dimen/product_manage_campaign_stock_event_name_margin"
            android:layout_marginTop="@dimen/dp_1"
            android:textColor="@color/Unify_N700"
            app:typographyType="heading_6"
            app:layout_constraintTop_toTopOf="@id/label_campaign_stock_event_info"
            app:layout_constraintStart_toEndOf="@id/label_campaign_stock_event_info"
            tools:text="40% | Rp 150.000"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_campaign_stock_event_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_lvl1"
            android:layout_marginEnd="@dimen/layout_lvl1"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/label_campaign_stock_event_info"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="30"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_campaign_stock_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/product_manage_campaign_stock_event_description_margin"
            android:paddingBottom="@dimen/product_manage_campaign_stock_variant_desc_padding"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_campaign_stock_event_info"
            tools:text="1 Aug | 00:00 - 31 Aug | 23:59"/>

        <com.tokopedia.product.manage.feature.campaignstock.ui.customview.variantaccordion.VariantProductStockAccordion
            android:id="@+id/accordion_campaign_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_campaign_stock_event_description"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_campaign_stock_event_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

</LinearLayout>