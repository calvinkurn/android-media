<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/dp_8"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/check_box_product"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="top"
        android:theme="@style/checkBoxStyle"
         />

    <FrameLayout
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15">

        <ImageView
            android:id="@+id/image_view_product"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_gravity="center"
            app:srcCompat="@drawable/tkpd_address_card" />

        <TextView
            android:id="@+id/tag_empty_product"
            style="@style/TextView.Micro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorStockEmpty"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="@string/product_manage_stock_empty"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/view_product_on_supervision"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:background="@drawable/bg_rect_red_round"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_lock_icon_again" />

            <TextView
                style="@style/TextView.Micro.WhitePrimary"
                android:layout_gravity="bottom|center"
                android:padding="@dimen/dp_5"
                android:text="@string/product_manage_label_supervision"
                android:textSize="10sp" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            style="@style/TextView.Small"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_stock"
            style="@style/TextView.Small.BlackDisabled"
            android:layout_marginTop="@dimen/dp_8"
            android:visibility="gone"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_price"
            style="@style/TextView.Small.Orange"
            android:layout_marginTop="@dimen/dp_8"
            tools:text="@string/app_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_view_featured"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                app:srcCompat="@drawable/ic_featured_product" />

            <TextView
                android:id="@+id/text_view_variant"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/bg_rect_stroke_lighter_gray"
                android:padding="@dimen/dp_3"
                android:text="@string/product_label_variant"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_view_cashback"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/bg_rect_stroke_green"
                android:padding="@dimen/dp_3"
                android:textColor="@android:color/white"
                android:visibility="gone"
                tools:text="@string/product_manage_item_cashback" />

            <TextView
                android:id="@+id/text_view_wholesale"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/bg_rect_stroke_lighter_gray"
                android:padding="@dimen/dp_3"
                android:text="@string/product_label_wholesale"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_view_pre_order"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/bg_rect_stroke_lighter_gray"
                android:padding="@dimen/dp_3"
                android:text="@string/product_label_po" />

            <ImageView
                android:id="@+id/image_view_free_return"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                app:srcCompat="@drawable/ic_free_return" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/image_button_option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:paddingStart="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_48"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_2"
                app:srcCompat="@drawable/ic_more_vert_grey"
                tools:src="@drawable/ic_more_vert_grey" />
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>