<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerAddProductWithNoVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/iv_add_product"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add_product_without_variant" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_add_product_title"
            android:contentDescription="@string/content_desc_tv_add_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/seller_migration_add_product_in_mainapp_title"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintStart_toEndOf="@id/iv_add_product"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_add_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/seller_migration_add_product_in_mainapp_desc"
            android:textColor="@color/Unify_NN950_68"
            app:layout_constraintStart_toEndOf="@id/iv_add_product"
            app:layout_constraintTop_toBottomOf="@id/tv_add_product_title"
            app:typographyType="body_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.seller_migration_common.presentation.widget.SellerFeatureCarousel
        android:id="@+id/sellerFeatureCarousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>