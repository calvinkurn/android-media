<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/product_manage_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
        android:id="@+id/quick_edit_stock_activate_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quick_edit_stock_active_product"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/quick_edit_stock_quantity_editor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/quick_edit_stock_activate_switch">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/quick_edit_total_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_edit_stock_total_stock"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.tokopedia.unifycomponents.QuantityEditorUnify
            android:id="@+id/quick_edit_quantity_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_lvl4"
        android:paddingBottom="@dimen/layout_lvl3"
        app:layout_constraintTop_toBottomOf="@id/quick_edit_stock_quantity_editor_layout">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/quick_edit_stock_save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_expand_save_button"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>