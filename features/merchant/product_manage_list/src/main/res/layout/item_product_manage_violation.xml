<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_manage_violation_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:background="@drawable/bg_product_manage_violation_number"
        android:paddingVertical="1dp"
        android:paddingHorizontal="6dp"
        android:textColor="@color/Unify_G500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_6"
        tools:text="1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_manage_violation_item_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toEndOf="@id/tv_product_manage_violation_item_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_product_manage_violation_item_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:typographyType="body_2"
        tools:text="Tambah produk sesuai Syarat dan Ketentuan"/>

</androidx.constraintlayout.widget.ConstraintLayout>