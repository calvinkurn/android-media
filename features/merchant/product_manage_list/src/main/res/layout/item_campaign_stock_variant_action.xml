<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_manage_campaign_stock_variant_action_height"
    android:paddingStart="@dimen/layout_lvl1"
    android:paddingLeft="@dimen/layout_lvl1"
    android:paddingEnd="@dimen/product_manage_campaign_stock_accordion_padding"
    android:paddingRight="@dimen/product_manage_campaign_stock_accordion_padding"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_campaign_stock_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Lihat varian produk"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_campaign_stock_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/unify_chips_ic_chevron_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>