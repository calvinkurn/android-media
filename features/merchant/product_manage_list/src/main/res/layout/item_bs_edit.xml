<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20">

    <ImageView
        android:id="@+id/img_bs_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="@dimen/dp_10"
        app:srcCompat="@drawable/ic_delete_grey" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_title_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_bs_edit"
        app:layout_constraintLeft_toRightOf="@+id/img_bs_edit"
        app:layout_constraintTop_toTopOf="@+id/img_bs_edit"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Etalase Produk" />

    <ImageView
        android:id="@+id/img_arrow_bulk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_bs_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_bs_edit"
        app:srcCompat="@drawable/ic_arrow_right_grey" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_bs_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_bs_edit"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_G400"
        android:visibility="gone"
        tools:text="Tersedia" />

</androidx.constraintlayout.widget.ConstraintLayout>