<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icuPmlMoreMenu"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:icon_name="VISIBILITY" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/product_manage_horizontal_spacing"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/product_manage_vertical_spacing"
        android:paddingBottom="@dimen/product_manage_vertical_spacing"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold" />
</LinearLayout>
