<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@drawable/bg_line_separator"
        android:orientation="vertical"
        android:showDividers="middle">

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_etalase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/title_etalase"/>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/title_category" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/title_condition" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_catalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/title_catalog" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/label_product_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/title_picture_product" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_manage"
        style="@style/Button.Submit.Green.Full"
        android:text="@string/title_save" />

</LinearLayout>