<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/variantList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/product_manage_save"
        app:unifyButtonSize="large"
        app:layout_constraintTop_toBottomOf="@id/variantList" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/progressBar"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_loading_indeterminate" />
</androidx.constraintlayout.widget.ConstraintLayout>
