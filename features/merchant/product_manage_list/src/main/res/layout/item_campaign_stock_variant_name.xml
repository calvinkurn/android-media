<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_manage_campaign_stock_variant_name_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/layout_lvl3"
    android:paddingLeft="@dimen/layout_lvl3"
    android:paddingEnd="@dimen/layout_lvl2"
    android:paddingRight="@dimen/layout_lvl2"
    android:background="@color/transparent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_campaign_stock_variant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N400"
        app:typographyType="body_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Merah | S"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_campaign_stock_variant_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N400"
        app:typographyType="body_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="10"/>

</androidx.constraintlayout.widget.ConstraintLayout>