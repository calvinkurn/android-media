<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/layout_lvl2">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/bottomsheet_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filter_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottomsheet_divider" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_close_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_button"
        android:layout_margin="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/filter_recycler_view" />

</androidx.constraintlayout.widget.ConstraintLayout>