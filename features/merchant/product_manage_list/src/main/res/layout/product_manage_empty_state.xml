<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/product_manage_empty_state_image_size"
        android:layout_height="@dimen/product_manage_empty_state_image_size"
        tools:src="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/product_manage_empty_state_title_width"
        android:textColor="@color/product_manage_title_color"
        android:text="@string/product_manage_list_empty_state_description"
        android:gravity="center"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />
</LinearLayout>