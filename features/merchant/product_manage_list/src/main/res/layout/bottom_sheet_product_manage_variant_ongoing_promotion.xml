<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_variant_ongoing_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/Unify_NN600"
        android:text="@string/product_manage_campaign_stock_variant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="reguler"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_variant_ongoing_promotion_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/tv_variant_ongoing_promotion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="reguler"
        tools:text="Merah | L"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_variant_ongoing_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_variant_ongoing_promotion"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_campaign_stock_info_card"
        tools:itemCount="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>