<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_margin="16dp">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_product_manage_ongoing_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:descriptionText="@string/product_manage_campaign_bottom_sheet_ticker"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerType="information"
        app:closeButtonVisibility="gone"
        app:tickerShapeType="loose"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_manage_ongoing_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ticker_product_manage_ongoing_promotion"
        tools:itemCount="4"
        tools:listitem="@layout/item_product_manage_ongoing_promotion"/>

</androidx.constraintlayout.widget.ConstraintLayout>