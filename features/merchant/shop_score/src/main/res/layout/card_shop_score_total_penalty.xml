<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvContentPenalty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        tools:text="@string/example_content_penalty"/>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardTotalPenalty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvContentPenalty">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shop_has_penalty">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvTitleTotalPenalty"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:typographyType="body_2"
                android:text="@string/total_penalty_text"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/Unify_N0" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvCountTotalPenalty"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:typographyType="heading_3"
                tools:text="@string/desc_no_penalty"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginStart="@dimen/spacing_lvl6"
                android:layout_marginEnd="@dimen/spacing_lvl6"
                app:layout_constraintTop_toBottomOf="@id/tvTitleTotalPenalty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/Unify_N0" />

            <View
                android:id="@+id/separator_multiple_dots"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tvCountTotalPenalty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:background="@drawable/ic_line_separator" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvPointDeductions"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                app:typographyType="body_3"
                tools:text="@string/performance_point_deduction_text"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:layout_marginBottom="@dimen/spacing_lvl4"
                app:layout_constraintTop_toTopOf="@id/tvTotalPointDeductions"
                app:layout_constraintBottom_toBottomOf="@id/tvTotalPointDeductions"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/Unify_N0" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvTotalPointDeductions"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                app:typographyType="heading_2"
                tools:text="-5"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:paddingBottom="@dimen/spacing_lvl4"
                app:layout_constraintTop_toBottomOf="@id/separator_multiple_dots"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/Unify_N0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</androidx.constraintlayout.widget.ConstraintLayout>
