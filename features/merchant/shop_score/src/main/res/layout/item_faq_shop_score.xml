<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title_faq_shop_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toStartOf="@id/ic_info_toggle_faq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        tools:text="@string/example_title_faq_shop_score" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_info_toggle_faq"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:icon_name="CHEVRON_DOWN"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_faq_shop_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_title_faq_shop_score"
        app:layout_constraintTop_toTopOf="@id/tv_title_faq_shop_score" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/separator_faq_shop_score"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_faq_shop_score" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_desc_faq_shop_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_faq_shop_score"
        app:typographyType="display_3"
        tools:text="@string/example_desc_faq_shop_score" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_card_level_faq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_faq_shop_score"
        tools:itemCount="2"
        tools:listitem="@layout/item_card_level_information" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_desc_parameter_performance_faq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="@string/desc_section_2_shop_score_calculation"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_card_level_faq"
        app:typographyType="display_3" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/card_shop_score_parameter_faq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="@color/transparent"
        app:card_type="border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_parameter_performance_faq">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_title_parameter_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:typographyType="display_2"
                app:typographyWeight="bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/title_parameter_shop_score_faq"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_shop_score_parameter_faq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_parameter_label"
                tools:itemCount="2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</androidx.constraintlayout.widget.ConstraintLayout>