<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl3"
    android:layout_marginEnd="@dimen/spacing_lvl3"
    android:layout_marginTop="@dimen/spacing_lvl3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/spacing_lvl4">

        <View
            android:id="@+id/penaltyIndicator"
            android:layout_width="@dimen/spacing_lvl2"
            android:layout_height="@dimen/layout_lvl0"
            android:background="@drawable/ic_penalty_status_indicator"
            app:layout_constraintBottom_toBottomOf="@id/tv_end_date_status_penalty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title_status_penalty"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Sedang berlangsung" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_end_date_status_penalty"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginStart="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_status_penalty"
            app:typographyType="small"
            tools:text="Selesai di 8 Feb 2021" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_date_status_penalty"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            tools:text="27 Jan 2021" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/separator_status_penalty"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_end_date_status_penalty"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginStart="@dimen/spacing_lvl4"
            app:layout_constraintTop_toBottomOf="@id/tv_end_date_status_penalty" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title_type_penalty"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_96"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="@id/tv_end_date_status_penalty"
            app:layout_constraintTop_toBottomOf="@id/separator_status_penalty"
            app:layout_constraintEnd_toStartOf="@id/ic_transaction_penalty_to_detail"
            app:typographyType="heading_5"
            tools:text="Pelanggaran Produk" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_invoice_transaction_penalty"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:layout_constraintStart_toStartOf="@id/tv_title_type_penalty"
            app:layout_constraintTop_toBottomOf="@id/tv_title_type_penalty"
            app:layout_constraintEnd_toStartOf="@id/ic_transaction_penalty_to_detail"
            app:typographyType="body_3"
            tools:text="INV/20210126/XX/V/553738285" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_transaction_penalty_to_detail"
            app:icon_name="CHEVRON_RIGHT"
            android:layout_width="@dimen/spacing_lvl5"
            android:layout_height="@dimen/spacing_lvl5"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:layout_constraintEnd_toEndOf="@id/tv_date_status_penalty"
            app:layout_constraintTop_toTopOf="@id/tv_title_type_penalty"
            app:layout_constraintBottom_toBottomOf="@id/tv_invoice_transaction_penalty" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>