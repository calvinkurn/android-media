<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleHeaderPenaltyFilter"
        tools:text="Urutkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:textColor="@color/Unify_N700"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPenaltyFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_lvl4"
        android:paddingEnd="@dimen/spacing_lvl4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvTitleHeaderPenaltyFilter"
        tools:listitem="@layout/item_chips_penalty_filter"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerSomFilter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_below="@id/rvPenaltyFilter"
        android:layout_marginTop="@dimen/spacing_lvl4" />

</RelativeLayout>