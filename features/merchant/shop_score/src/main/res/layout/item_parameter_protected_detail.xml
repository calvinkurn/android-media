<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/icDotParameterReliefDetail"
        android:layout_width="@dimen/spacing_lvl3"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitleParameterReliefDetail"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleParameterReliefDetail"
        app:srcCompat="@drawable/ic_dot_parameter_relief"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleParameterReliefDetail"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="12dp"
        app:typographyType="body_3"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/icDotParameterReliefDetail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Membuka Tokopedia Seller dalam 90 hari terakhir"/>

</androidx.constraintlayout.widget.ConstraintLayout>