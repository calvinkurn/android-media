<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/separatorDividerPenalty"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPenaltyFilterBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:layout_below="@+id/separatorDividerPenalty"
        android:layout_alignParentStart="true"
        tools:itemCount="2"
        tools:listitem="@layout/item_penalty_filter_list"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnShowPenalty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rvPenaltyFilterBottomSheet"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/btn_show_penalty" />

</RelativeLayout>