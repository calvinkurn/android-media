<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/separatorDividerPenalty"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPenaltyFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:layout_below="@+id/separatorDividerPenalty"
        android:layout_above="@+id/btnShowPenalty"
        android:layout_alignParentStart="true"
        tools:listitem="@layout/item_penalty_filter_list"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnShowPenalty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:text="@string/btn_show_penalty" />

</RelativeLayout>