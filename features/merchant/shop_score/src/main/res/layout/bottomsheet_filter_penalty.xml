<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/separatorDividerPenalty"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rvPenaltyFilterBottomSheet"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPenaltyFilterBottomSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        android:layout_below="@+id/separatorDividerPenalty"
        app:layout_constraintTop_toBottomOf="@id/separatorDividerPenalty"
        app:layout_constraintBottom_toTopOf="@id/btnShowPenalty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="2"
        tools:listitem="@layout/item_penalty_filter_list"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnShowPenalty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvPenaltyFilterBottomSheet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/btn_show_penalty" />

</androidx.constraintlayout.widget.ConstraintLayout>