<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleCalculation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950_96"
        android:text="@string/title_calculation_shop_performance"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescCalculation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="display_2"
        android:text="@string/desc_calculation_shop_performance"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleCalculation"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/separatorCalculation"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:text="@string/desc_calculation_shop_performance"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescCalculation"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvUpdateCalculation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="display_2"
        android:text="@string/update_calculation_shop_performance"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separatorCalculation"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>