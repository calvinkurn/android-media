<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_dot_stepper"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_dot_stepper" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_stepper_penalty"
        android:layout_width="144dp"
        android:layout_height="@dimen/spacing_lvl1"
        app:layout_constraintBottom_toBottomOf="@id/ic_dot_stepper"
        app:layout_constraintStart_toEndOf="@id/ic_dot_stepper"
        app:layout_constraintTop_toTopOf="@id/ic_dot_stepper" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title_status_stepper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="@id/ic_dot_stepper"
        app:layout_constraintTop_toBottomOf="@id/ic_dot_stepper"
        tools:text="Poin belum dipotong" />

</androidx.constraintlayout.widget.ConstraintLayout>