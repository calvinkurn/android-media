<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl1"
    android:layout_marginEnd="@dimen/spacing_lvl1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title_section_faq_shop_score"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            app:typographyType="heading_2"
            android:textColor="@color/Unify_N700_96"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/title_section_faq_shop_score"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_faq_shop_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_section_faq_shop_score"
            tools:listitem="@layout/item_faq_shop_score"
            tools:itemCount="3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_label_help_center"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            app:typographyType="body_2"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_faq_shop_score"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/title_help_center_tokopedia"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>