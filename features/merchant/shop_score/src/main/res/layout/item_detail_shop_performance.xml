<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/cardItemDetailShopPerformance"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitlePerformanceProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="Tingkat kesuksesan pesanan"
        android:textColor="@color/Unify_NN950_96"
        app:typographyType="display_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPerformanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="@string/item_detail_performance_value"
        app:typographyType="heading_2"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePerformanceProgress"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPerformanceTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:textColor="@color/Unify_NN950_68"
        tools:text="@string/item_detail_performance_target"
        app:typographyType="display_3"
        app:layout_constraintEnd_toStartOf="@id/ic_item_performance_right"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePerformanceProgress"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_item_performance_right"
        app:icon_name="CHEVRON_RIGHT"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tvPerformanceTarget"
        app:layout_constraintBottom_toBottomOf="@id/tvPerformanceTarget"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/separatorItemDetail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPerformanceValue"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>