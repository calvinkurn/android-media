<?xml version="1.0" encoding="utf-8"?>

<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerRegularMerchantSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitleEligiblePowerMerchant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="@string/title_header_rm_section"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="display_1"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDescEligiblePowerMerchant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:text="@string/desc_potential_eligible_power_merchant"
            android:textColor="@color/Unify_NN950_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleEligiblePowerMerchant"
            app:typographyType="display_3" />

        <com.tokopedia.unifycomponents.CardUnify
            android:id="@+id/cardEligiblePowerMerchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescEligiblePowerMerchant">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerEligiblePowerMerchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_bg_eligible_rm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_pm_section_green" />

                <com.tokopedia.iconunify.IconUnify
                    android:id="@+id/ic_pm_badge_eligible_status"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    app:icon_name="BADGE_PM_FILLED"
                    app:layout_constraintBottom_toBottomOf="@id/tv_pm_potential_value"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_pm_potential_value" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_pm_potential_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/Unify_NN950_96"
                    app:layout_constraintStart_toEndOf="@id/ic_pm_badge_eligible_status"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:typographyType="display_2"
                    tools:text="@string/example_desc_pm_potential" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tv_see_all_benefit_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="@color/Unify_GN500"
                    android:background="?selectableItemBackground"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_pm_potential_value"
                    app:layout_constraintTop_toBottomOf="@id/tv_pm_potential_value"
                    app:typographyType="display_2"
                    app:typographyWeight="bold"
                    android:text="@string/see_all_benefit" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.tokopedia.unifycomponents.CardUnify>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>