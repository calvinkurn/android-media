<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_lvl5"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginEnd="@dimen/dp_12"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_potential_pm_benefit"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_order_pm"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_potential_pm_benefit"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_potential_pm_benefit"
        app:layout_constraintStart_toEndOf="@id/iv_potential_pm_benefit"
        tools:text="@string/example_text_item_potential_pm_benefit"/>

</androidx.constraintlayout.widget.ConstraintLayout>