<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_potential_pm_benefit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_potential_pm_benefit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@id/iv_potential_pm_benefit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_potential_pm_benefit"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        tools:text="@string/text_item_potential_pm_benefit_1" />

</androidx.constraintlayout.widget.ConstraintLayout>