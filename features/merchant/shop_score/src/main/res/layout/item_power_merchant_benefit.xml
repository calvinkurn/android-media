<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground"
    android:paddingStart="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl3">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPowerMerchantBenefitIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitlePowerMerchantBenefit"
        app:layout_constraintBottom_toBottomOf="@id/tvTitlePowerMerchantBenefit"
        tools:srcCompat="@drawable/ic_pm_gold_badge"
        android:layout_width="@dimen/power_merchant_benefit_icon_size"
        android:layout_height="@dimen/power_merchant_benefit_icon_size"
        android:layout_marginTop="@dimen/spacing_lvl2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitlePowerMerchantBenefit"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivPowerMerchantBenefitIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="Dapat menampilkan 5 produk unggulan di bagian atas tokomu"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/dp_12"/>

</androidx.constraintlayout.widget.ConstraintLayout>