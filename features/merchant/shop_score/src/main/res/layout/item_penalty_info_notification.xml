<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/card_penalty_info_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:card_type="border">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/ic_penalty_info_notification"
                android:layout_width="16dp"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@id/tv_penalty_info_notification"
                app:layout_constraintBottom_toBottomOf="@id/tv_penalty_info_notification"
                app:layout_constraintStart_toStartOf="parent"
                app:icon_name="LIST_TRANSACTION"
                app:icon_color_light_enable="@color/Unify_NN900"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_penalty_info_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/Unify_NN600"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ic_penalty_info_notification"
                app:layout_constraintEnd_toStartOf="@id/notif_penalty_info_notification"
                app:typographyType="display_2"
                tools:text="Belum Berlangsung (0)"/>

            <com.tokopedia.unifycomponents.NotificationUnify
                android:id="@+id/notif_penalty_info_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="@id/tv_penalty_info_notification"
                app:layout_constraintBottom_toBottomOf="@id/tv_penalty_info_notification"
                app:layout_constraintStart_toEndOf="@id/tv_penalty_info_notification"
                app:layout_constraintEnd_toStartOf="@id/ic_chevron_penalty_info_notification"
                app:notificationType="none_type"/>

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/ic_chevron_penalty_info_notification"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/tv_penalty_info_notification"
                app:layout_constraintBottom_toBottomOf="@id/tv_penalty_info_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:icon_name="CHEVRON_RIGHT"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify2>

</androidx.constraintlayout.widget.ConstraintLayout>