<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="6dp">
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_penalty_calculation_score_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_penalty_calculation_score_detail"
        app:typographyType="display_3"
        tools:text="Total Poin Penalti Sedang Berlangsung"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_penalty_calculation_score_detail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/tv_penalty_calculation_score_detail"
        app:layout_constraintEnd_toStartOf="@id/tv_penalty_calculation_score_value"
        app:layout_constraintTop_toTopOf="@id/tv_penalty_calculation_score_detail"
        app:layout_constraintBottom_toBottomOf="@id/tv_penalty_calculation_score_detail"
        app:icon_name="INFORMATION"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_penalty_calculation_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_3"
        tools:text="-5"/>

</androidx.constraintlayout.widget.ConstraintLayout>