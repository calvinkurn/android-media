<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/titleEmptyStatePenalty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="heading_4"
        android:textColor="@color/Unify_NN950_96"
        android:text="@string/title_empty_state_penalty"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/descEmptyStatePenalty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleEmptyStatePenalty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:typographyType="body_2"
        android:textColor="@color/Unify_NN950_68"
        android:text="@string/desc_empty_state_penalty"/>

</androidx.constraintlayout.widget.ConstraintLayout>