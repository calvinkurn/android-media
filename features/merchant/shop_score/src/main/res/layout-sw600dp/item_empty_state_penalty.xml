<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/titleEmptyStatePenalty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="heading_4"
        android:textColor="@color/Unify_N700_96"
        android:text="@string/title_empty_state_penalty"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/descEmptyStatePenalty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl5"
        android:layout_marginStart="@dimen/spacing_lvl5"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleEmptyStatePenalty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N700_68"
        android:text="@string/desc_empty_state_penalty"/>

</androidx.constraintlayout.widget.ConstraintLayout>