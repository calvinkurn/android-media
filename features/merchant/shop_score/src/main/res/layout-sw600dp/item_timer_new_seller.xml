<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/containerTimerNewSeller"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <com.tokopedia.unifycomponents.timer.TimerUnifyHighlight
            android:id="@+id/timerNewSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@id/btn_shop_performance_learn"
            app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
            app:layout_constraintTop_toTopOf="@id/tv_shop_performance_new_seller"
            app:layout_constraintWidth_percent="0.4"
            app:timer_unify_highlight_size="medium"
            app:timer_unify_highlight_variant="alternate" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.4"
            android:orientation="vertical"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shop_performance_new_seller"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:text="@string/title_shop_performance_become_existing_seller"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_shop_performance_learn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/shop_performance_learn"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_performance_new_seller"
            app:layout_constraintWidth_percent="0.25"
            app:unifyButtonInvers="true"
            app:unifyButtonSize="small"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_video_shop_performance_learn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            app:icon_color_light_enable="@color/Unify_Static_White"
            app:icon_name="VIDEO"
            app:layout_constraintBottom_toBottomOf="@id/btn_shop_performance_learn"
            app:layout_constraintStart_toEndOf="@id/btn_shop_performance_learn"
            app:layout_constraintTop_toTopOf="@id/btn_shop_performance_learn" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_watch_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/title_tv_watch"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="@id/btn_shop_performance_learn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_video_shop_performance_learn"
            app:layout_constraintTop_toTopOf="@id/btn_shop_performance_learn"
            app:typographyType="heading_5" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/watchVideoGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="ic_video_shop_performance_learn, tv_watch_video" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>