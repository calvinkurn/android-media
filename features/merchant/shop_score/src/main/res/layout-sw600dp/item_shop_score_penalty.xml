<?xml version="1.0" encoding="utf-8"?>

<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItemPenalty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/penaltyIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_penalty_status_indicator"
            app:layout_constraintBottom_toBottomOf="@id/tv_end_date_status_penalty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title_status_penalty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Sedang berlangsung" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_end_date_status_penalty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_status_penalty"
            app:typographyType="small"
            tools:text="Selesai di 8 Feb 2021" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_date_status_penalty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            tools:text="27 Jan 2021" />

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/separator_status_penalty"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_end_date_status_penalty"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_end_date_status_penalty" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_title_type_penalty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_96"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/tv_end_date_status_penalty"
            app:layout_constraintTop_toBottomOf="@id/separator_status_penalty"
            app:layout_constraintEnd_toStartOf="@id/ic_transaction_penalty_to_detail"
            app:typographyType="heading_5"
            tools:text="Pelanggaran Produk" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_invoice_transaction_penalty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_title_type_penalty"
            app:layout_constraintTop_toBottomOf="@id/tv_title_type_penalty"
            app:layout_constraintEnd_toStartOf="@id/ic_transaction_penalty_to_detail"
            app:typographyType="body_3"
            tools:text="INV/20210126/XX/V/553738285" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_transaction_penalty_to_detail"
            app:icon_name="CHEVRON_RIGHT"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@id/tv_date_status_penalty"
            app:layout_constraintTop_toTopOf="@id/tv_title_type_penalty"
            app:layout_constraintBottom_toBottomOf="@id/tv_invoice_transaction_penalty" />

        <View
            android:id="@+id/shopPenaltySelected"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_selected_item_penalty"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>