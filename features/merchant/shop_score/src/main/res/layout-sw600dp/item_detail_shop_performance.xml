<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardItemDetailShopPerformance"
    android:layout_marginEnd="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitlePerformanceProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        tools:text="Membuka Tokopedia Seller dalam 90 hari terakhir"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_3"
        app:layout_constraintEnd_toStartOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPerformanceValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/item_detail_performance_value"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_N700"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/tvTitlePerformanceProgress"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/tvTitlePerformanceProgress"
        app:layout_constraintTop_toTopOf="@id/tvTitlePerformanceProgress"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPerformanceTarget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:textColor="@color/Unify_N700_68"
        tools:text="@string/item_detail_performance_target"
        app:typographyType="body_3"
        app:layout_constraintEnd_toStartOf="@id/ic_item_performance_right"
        app:layout_constraintTop_toTopOf="@id/tvTitlePerformanceProgress"
        app:layout_constraintBottom_toBottomOf="@id/tvTitlePerformanceProgress"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_item_performance_right"
        app:icon_name="CHEVRON_RIGHT"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/tvPerformanceTarget"
        app:layout_constraintBottom_toBottomOf="@id/tvPerformanceTarget"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/separatorItemDetail"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPerformanceValue"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>