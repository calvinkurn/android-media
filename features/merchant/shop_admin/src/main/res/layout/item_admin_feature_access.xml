<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerTopHorizontal"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dividerFeatureAccessVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/divider_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerTopHorizontal" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivFeatureAccessIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/dividerFeatureAccessVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvFeatureAccessName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toStartOf="@id/dividerFeatureAccessVertical"
        app:layout_constraintBottom_toBottomOf="@id/ivFeatureAccessIcon"
        app:layout_constraintStart_toEndOf="@id/ivFeatureAccessIcon"
        app:layout_constraintTop_toTopOf="@id/ivFeatureAccessIcon"
        app:typographyType="body_2"
        tools:text="Balas Pesan pembeli" />

</androidx.constraintlayout.widget.ConstraintLayout>