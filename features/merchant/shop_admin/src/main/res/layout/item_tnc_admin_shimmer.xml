<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderLine1"
        android:layout_width="246dp"
        android:layout_height="16dp"
        app:loader_type="line"
        app:loader_corner_radius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderLine2"
        android:layout_width="229dp"
        android:layout_height="16dp"
        app:loader_type="line"
        app:loader_corner_radius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderLine1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderMask1"
        android:layout_width="14dp"
        android:layout_height="13dp"
        app:loader_type="rect"
        app:loader_corner_radius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loaderLine2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderLine3"
        android:layout_width="275dp"
        android:layout_height="13dp"
        app:loader_type="line"
        app:loader_corner_radius="8dp"
        app:layout_constraintStart_toEndOf="@id/loaderMask1"
        app:layout_constraintTop_toTopOf="@id/loaderMask1"
        android:layout_marginStart="10dp" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderLine4"
        android:layout_width="256dp"
        android:layout_height="13dp"
        app:loader_type="line"
        app:loader_corner_radius="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/loaderMask1"
        app:layout_constraintTop_toBottomOf="@id/loaderLine3"
        android:layout_marginStart="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>