<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvHeaderTncTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:typographyType="heading_3"
        android:text="@string/title_tnc_header"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTncSummaryLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_tnc_summary"
        android:layout_marginTop="16dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="@id/tvHeaderTncTitle"
        app:layout_constraintEnd_toEndOf="@id/tvHeaderTncTitle"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderTncTitle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTncList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:listitem="@layout/item_tnc_admin_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTncSummaryLabel"/>

</androidx.constraintlayout.widget.ConstraintLayout>