<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_NN0">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="header_background, header, status_bar" />

    <View
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/olp_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/status_bar" />

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_bar"
        app:unify_header_is_show_back_button="true"
        app:unify_header_is_show_shadow="false"
        app:unify_header_title="@string/bmgm_title"
        app:unify_header_transparent_mode="true" />

    <include
        android:id="@+id/loading_state_olp"
        layout="@layout/loading_state_olp"
        android:visibility="gone" />

    <com.tokopedia.buy_more_get_more.olp.view.widget.StickySingleHeaderView
        android:id="@+id/sticky_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/miniCartPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_olp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </com.tokopedia.buy_more_get_more.olp.view.widget.StickySingleHeaderView>

    <com.tokopedia.minicart.bmgm.presentation.fragment.BmgmMiniCartView
        android:id="@+id/miniCartPlaceholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_height="60dp" />

    <com.tokopedia.empty_state.EmptyStateUnify
        android:id="@+id/errorPageLarge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unifyEmptyStateDescription="test"
        app:unifyEmptyStateImageUrl="https://images.tokopedia.net/android/merchant_voucher/il_mvc_no_result.webp"
        app:unifyEmptyStatePrimaryCTAText="test"
        app:unifyEmptyStateTitle="" />
</androidx.constraintlayout.widget.ConstraintLayout>