<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgGwpProduct"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvGwpProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imgGwpProduct"
        android:textColor="@color/Unify_NN600"
        app:typographyType="paragraph_3"
        tools:text="All of The Above Weightless Eyeshadow" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvGwpProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGwpProductName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/imgGwpProduct"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Rp280.000" />

    <com.tokopedia.unifycomponents.QuantityEditorUnify
        android:id="@+id/gwpQtyEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgGwpProduct"
        android:layout_alignParentEnd="true" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/btnGwpQtyDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gwpQtyEditor"
        android:layout_alignBottom="@+id/gwpQtyEditor"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        android:layout_toStartOf="@+id/gwpQtyEditor"
        android:visibility="gone"
        app:icon_color_light_enable="@color/Unify_NN500"
        app:icon_name="DELETE"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerBottom"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/gwpQtyEditor"
        android:layout_marginTop="12dp"
        android:background="@color/Unify_NN200" />
</RelativeLayout>