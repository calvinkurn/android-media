<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgError"
        android:layout_width="96dp"
        android:layout_height="64dp"
        tools:src="@drawable/unify_globalerrors_404" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnReload"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imgError"
        android:gravity="center_vertical"
        android:minHeight="64dp"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvErrorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/bmsm_mini_cart_error_title"
            app:typographyType="paragraph_1"
            app:typographyWeight="bold"
            tools:viewBindingIgnore="true" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/bmsm_mini_cart_error_message"
            app:typographyType="paragraph_3"
            tools:viewBindingIgnore="true" />
    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnReload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgError"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/bmgm_cta_text_error_not_found"
        app:unifyButtonSize="small" />
</RelativeLayout>