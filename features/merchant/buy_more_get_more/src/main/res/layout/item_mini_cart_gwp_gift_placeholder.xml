<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="3dp"
    android:gravity="center_vertical">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgGwpProductPlaceholder"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icGiftProductPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgGwpProductPlaceholder"
        android:layout_alignTop="@+id/imgGwpProductPlaceholder"
        android:layout_alignEnd="@+id/imgGwpProductPlaceholder"
        android:layout_alignBottom="@+id/imgGwpProductPlaceholder"
        android:background="@drawable/bg_gwp_gift_overlay"
        android:padding="6dp"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:icon_name="GIFT" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imgGwpProductPlaceholder"
        android:layout_alignBottom="@+id/imgGwpProductPlaceholder"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/imgGwpProductPlaceholder"
        android:background="@color/Unify_NN200" />
</RelativeLayout>