<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingLeft="@dimen/header_padding"
    android:paddingRight="@dimen/header_padding">

        <LinearLayout
            android:id="@+id/textWrapperID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/header_text_wrapper_padding_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmgm_title"
                android:textColor="@color/Unify_NN0"
                app:typographyType="display_1"
                app:typographyWeight="bold" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpg_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN0"
                app:typographyType="display_3"
                app:typographyWeight="reguler"
                tools:text="@string/bmgm_title" />
        </LinearLayout>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/more_menu"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="8dp"
            app:icon_color_light_disabled="@color/Unify_NN0"
            app:icon_color_light_enable="@color/Unify_NN0"
            app:icon_color_night_disabled="@color/Unify_NN0"
            app:icon_color_night_enable="@color/Unify_NN0"
            app:icon_enable_state="true"
            app:icon_name="MENU_HAMBURGER"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.iconnotification.IconNotification
            android:id="@+id/cart"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="8dp"
            app:iconNotificationGravity="top|right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/more_menu"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>