<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_tier_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/Unify_TN500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3"
        app:typographyWeight="reguler"
        tools:text="Beli 2 diskon 15%" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/bullet_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/bmgb_bullet_symbol"
        android:textColor="@color/Unify_TN500"
        app:layout_constraintBottom_toBottomOf="@+id/tpg_tier_info"
        app:layout_constraintStart_toEndOf="@+id/tpg_tier_info"
        app:layout_constraintTop_toTopOf="@+id/tpg_tier_info"
        app:typographyType="paragraph_2"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>