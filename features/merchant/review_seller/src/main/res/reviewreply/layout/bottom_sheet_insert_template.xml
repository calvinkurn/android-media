<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/spacing_lvl4">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tfuTitleTemplate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:text_field_input_type="text"
        app:text_field_counter="30"
        app:text_field_placeholder="@string/title_template_label"
        app:text_field_label="@string/title_template_label"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/tfuDescTemplate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:text_field_input_type="text"
        app:text_field_placeholder="@string/desc_template_label"
        app:text_field_label="@string/desc_template_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tfuTitleTemplate"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnSubmitTemplate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        android:gravity="center_horizontal"
        android:text="@string/save_template_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tfuDescTemplate"/>

</androidx.constraintlayout.widget.ConstraintLayout>