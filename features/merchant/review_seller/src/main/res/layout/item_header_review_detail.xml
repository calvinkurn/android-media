<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rating_star"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:src="@drawable/review_app_rating_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/rating_star_icon_content_description" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/rating_star_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_average_rating"
        android:textSize="30sp"
        android:textColor="@color/typography_black"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        app:typographyWeight="bold"
        app:layout_constraintLeft_toRightOf="@id/rating_star"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/maximum_rating_star_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maximum_product_rating"
        app:typographyType="body_1"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_6"
        app:layout_constraintLeft_toRightOf="@id/rating_star_value"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/total_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_product_review"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/typography_black"
        app:typographyType="body_1"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/rating_star"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/review_period_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipSize="medium"
        app:chipText="30 Hari Terakhir"
        app:chipType="normal"
        app:centerText="true"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rating_star_value" />

</androidx.constraintlayout.widget.ConstraintLayout>