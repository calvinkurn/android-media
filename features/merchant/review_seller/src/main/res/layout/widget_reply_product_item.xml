<?xml version="1.0" encoding="utf-8"?>

<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:card_type="border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivItemProduct"
            android:layout_width="@dimen/layout_lvl7"
            android:layout_height="@dimen/layout_lvl7"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unify_image_corner_radius="8" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgTitleProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:maxLines="2"
            android:textColor="@color/clr_f531353b"
            app:layout_constraintBottom_toTopOf="@id/ivItemProduct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivItemProduct"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="Adidas NMD Pharell William x Human Made" />


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgVariantLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/clr_f531353b"
            app:layout_constraintBottom_toBottomOf="@id/ivItemProduct"
            app:layout_constraintStart_toEndOf="@id/ivItemProduct"
            app:layout_constraintTop_toBottomOf="@id/tgTitleProduct"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Varian:" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgVariantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl1"
            android:layout_marginLeft="@dimen/spacing_lvl1"
            android:textColor="@color/clr_f531353b"
            app:layout_constraintBottom_toBottomOf="@id/ivItemProduct"
            app:layout_constraintStart_toEndOf="@id/tgVariantLabel"
            app:layout_constraintTop_toBottomOf="@id/tgTitleProduct"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Merah" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>