    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp"/>
            <solid android:color="@color/Unify_N0"/>
        </shape>
    </item>
    <item android:bottom="-2dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="9dp" android:topRightRadius="9dp"/>
            <stroke android:width="1dp" android:color="@color/Unify_Y200"/>
        </shape>
    </item>
</layer-list>
