<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvStcLblStartFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/stc_start_from"
        android:textColor="@color/color_stc_grey_ae31353b"
        android:textSize="@dimen/fontSize_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/edtStcStartFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/edtStcUntil"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStcLblStartFrom"
        app:text_field_placeholder="@string/stc_select_date"
        tools:layout_height="@dimen/layout_lvl4"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvStcLblUntil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/stc_until"
        android:textColor="@color/color_stc_grey_ae31353b"
        android:textSize="@dimen/fontSize_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/edtStcUntil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edtStcStartFrom"
        app:layout_constraintTop_toBottomOf="@+id/tvStcLblUntil"
        app:text_field_placeholder="@string/stc_select_date"
        tools:layout_height="@dimen/layout_lvl4" />

    <com.tokopedia.calendar.UnifyCalendar
        android:id="@+id/calendarPickerStc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtStcUntil" />
</androidx.constraintlayout.widget.ConstraintLayout>