<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.tokopedia.statistic.view.customview.DateTextFieldView
            android:id="@+id/edtStcStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_weight="1" />

        <com.tokopedia.statistic.view.customview.DateTextFieldView
            android:id="@+id/edtStcEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_weight="1" />
    </LinearLayout>

    <com.tokopedia.calendar.UnifyCalendar
        android:id="@+id/calendarPickerStc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_lvl2" />
</LinearLayout>