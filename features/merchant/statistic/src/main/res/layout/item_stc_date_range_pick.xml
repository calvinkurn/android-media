<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingLeft="@dimen/layout_lvl2"
    android:paddingEnd="@dimen/layout_lvl0"
    android:paddingRight="@dimen/layout_lvl0">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvStcSingleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintBottom_toBottomOf="@+id/radStcSingleDateRange"
        app:layout_constraintEnd_toStartOf="@+id/radStcSingleDateRange"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/radStcSingleDateRange"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="7 hari terakhir" />

    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
        android:id="@+id/radStcSingleDateRange"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.tokopedia.statistic.view.customview.DateTextFieldView
        android:id="@+id/edtStcSingle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl1"
        android:layout_marginRight="@dimen/spacing_lvl1"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/radStcSingleDateRange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radStcSingleDateRange"
        tools:visibility="gone" />

    <View
        android:id="@+id/verLineStcCustom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shc_dimen_1dp"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@color/light_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtStcSingle" />

</androidx.constraintlayout.widget.ConstraintLayout>