<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/Unify_NN200" /> <!-- Background color -->
            <corners android:radius="12dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/Unify_GN400" /> <!-- Progress color -->
                <corners android:radius="12dp" /> <!-- Match the background radius -->
            </shape>
        </clip>
    </item>
</layer-list>