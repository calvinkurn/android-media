<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="-16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/transparent">

    <include
        android:id="@+id/layout_placeholder"
        layout="@layout/layout_shop_home_direct_purchase_by_etalase_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.shop.home.view.customview.directpurchase.DirectPurchaseWidgetView
        android:id="@+id/shop_direct_purchase_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
