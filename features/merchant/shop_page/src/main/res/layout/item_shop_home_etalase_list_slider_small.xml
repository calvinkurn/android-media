<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="2dp"
    android:paddingEnd="4dp"
    android:paddingBottom="12dp"
    >

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_showcase_item_slider_small"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        app:unify_image_type="rect"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_showcase_name_item_slider_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N700_96"
        tools:text="Aesthetic Wall Hanging Mirror New 2021"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginTop="8dp"
        />

</LinearLayout>