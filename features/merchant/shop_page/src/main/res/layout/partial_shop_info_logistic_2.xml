<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <com.tokopedia.design.label.LabelView
        android:id="@+id/labelViewLogisticTitle"
        style="@style/LabelLayout"
        android:layout_height="@dimen/dp_64"
        android:paddingRight="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:lv_content="@string/shop_info_label_manage_note"
        app:lv_title="@string/shop_info_label_logistic"
        app:lv_title_text_style="bold"
        app:lv_title_text_size="@dimen/sp_16"
        app:lv_content_text_size="@dimen/sp_14"
        app:lv_content_color="@color/tkpd_main_green"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewLogistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>