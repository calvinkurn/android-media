<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgMainShowcase"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgFirstShowcase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgBackgroundGradient"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:elevation="1dp"
        android:background="@drawable/shop_shape_showcase_gradient_background"
        app:layout_constraintBottom_toBottomOf="@+id/imgMainShowcase"
        app:layout_constraintEnd_toEndOf="@+id/imgMainShowcase"
        app:layout_constraintStart_toStartOf="@+id/imgMainShowcase" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgMainShowcaseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="@color/clr_dms_icon_white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imgMainShowcase"
        app:layout_constraintEnd_toEndOf="@+id/imgMainShowcase"
        app:layout_constraintStart_toStartOf="@+id/imgMainShowcase"
        app:layout_constraintTop_toTopOf="@+id/imgMainShowcase"
        app:layout_constraintVertical_bias="1.0"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Power Bank"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgFirstShowcase"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/imgSecondShowcase"
        app:layout_constraintTop_toTopOf="@+id/imgMainShowcase"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgFirstShowcaseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgFirstShowcase"
        app:layout_constraintStart_toStartOf="@+id/imgFirstShowcase"
        app:layout_constraintTop_toBottomOf="@+id/imgFirstShowcase"
        app:typographyType="small"
        tools:text="Tablet"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSecondShowcase"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgMainShowcase"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgSecondShowcaseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgSecondShowcase"
        app:layout_constraintStart_toStartOf="@+id/imgSecondShowcase"
        app:layout_constraintTop_toBottomOf="@+id/imgFirstShowcase"
        app:typographyType="small"
        tools:text="Accecories"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgThirdShowcase"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/imgFourthShowcase"
        app:layout_constraintTop_toBottomOf="@+id/tpgFirstShowcaseTitle"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgThirdShowcaseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgFirstShowcase"
        app:layout_constraintStart_toStartOf="@+id/imgFirstShowcase"
        app:layout_constraintTop_toBottomOf="@+id/imgThirdShowcase"
        app:typographyType="small"
        tools:text="Handphone"
        tools:visibility="visible" />


    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgFourthShowcase"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgThirdShowcase"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgFourthShowcaseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgFourthShowcase"
        app:layout_constraintStart_toStartOf="@+id/imgFourthShowcase"
        app:layout_constraintTop_toBottomOf="@+id/imgFourthShowcase"
        app:typographyType="small"
        tools:text="Power Bank"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
