<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <!--Main Showcase-->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgMainShowcase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:unify_image_corner_radius="12"
            tools:src="@drawable/ic_add_photo"
            tools:visibility="visible" />

        <ImageView
            android:contentDescription="@string/shop_showcase_navigation_tab_widget_content_description"
            android:id="@+id/imgBackgroundGradient"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:background="@drawable/shop_shape_showcase_gradient_background"
            android:elevation="1dp" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpgMainShowcaseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="@color/clr_dms_icon_white"
            android:visibility="invisible"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            tools:text="Power Bank"
            tools:visibility="visible" />

    </FrameLayout>

    <!--Small Showcase-->
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="4">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgFirstShowcase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"

            android:visibility="invisible"
            app:unify_image_corner_radius="12"
            tools:src="@drawable/ic_add_photo"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgSecondShowcase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="8dp"

            android:visibility="invisible"
            app:unify_image_corner_radius="12"
            tools:src="@drawable/ic_add_photo"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpgFirstShowcaseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:visibility="invisible"
            app:typographyType="small"
            tools:text="Power Bank"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpgSecondShowcaseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:visibility="invisible"
            app:typographyType="small"
            tools:text="Power Bank"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgThirdShowcase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="8dp"

            android:visibility="invisible"
            app:unify_image_corner_radius="12"
            tools:src="@drawable/ic_add_photo"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgFourthShowcase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:visibility="invisible"
            app:unify_image_corner_radius="12"
            tools:src="@drawable/ic_add_photo"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpgThirdShowcaseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:visibility="invisible"
            app:typographyType="small"
            tools:text="Power Bank"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpgFourthShowcaseTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:visibility="invisible"
            app:typographyType="small"
            tools:text="Power Bank"
            tools:visibility="visible" />
        
    </GridLayout>

</LinearLayout>