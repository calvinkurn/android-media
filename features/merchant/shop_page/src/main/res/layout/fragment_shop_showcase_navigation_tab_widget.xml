<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgMainBanner"
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgFirstBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/imgMainBannerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imgMainBanner"
        app:layout_constraintEnd_toEndOf="@+id/imgMainBanner"
        app:layout_constraintStart_toStartOf="@+id/imgMainBanner"
        app:layout_constraintTop_toTopOf="@+id/imgMainBanner"
        app:layout_constraintVertical_bias="1.0"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Power Bank"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgFirstBanner"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/imgSecondBanner"
        app:layout_constraintTop_toTopOf="@+id/imgMainBanner"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/imgFirstBannerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgFirstBanner"
        app:layout_constraintStart_toStartOf="@+id/imgFirstBanner"
        app:layout_constraintTop_toBottomOf="@+id/imgFirstBanner"
        app:typographyType="small"
        tools:text="Tablet"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSecondBanner"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgMainBanner"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgSecondBannerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgSecondBanner"
        app:layout_constraintStart_toStartOf="@+id/imgSecondBanner"
        app:layout_constraintTop_toBottomOf="@+id/imgFirstBanner"
        app:typographyType="small"
        tools:text="Accecories"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgThirdBanner"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/imgFourthBanner"
        app:layout_constraintTop_toBottomOf="@+id/imgFirstBannerTitle"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgThirdBannerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgFirstBanner"
        app:layout_constraintStart_toStartOf="@+id/imgFirstBanner"
        app:layout_constraintTop_toBottomOf="@+id/imgThirdBanner"
        app:typographyType="small"
        tools:text="Handphone"
        tools:visibility="visible" />


    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgFourthBanner"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgThirdBanner"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/imgFourthBannerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imgFourthBanner"
        app:layout_constraintStart_toStartOf="@+id/imgFourthBanner"
        app:layout_constraintTop_toBottomOf="@+id/imgFourthBanner"
        app:typographyType="small"
        tools:text="Power Bank"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
