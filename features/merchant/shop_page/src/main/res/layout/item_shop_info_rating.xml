<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconRating"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:icon_color_light_enable="@color/Unify_YN300"
        app:icon_color_night_enable="@color/Unify_YN600"
        app:icon_name="STAR_FILLED"
        app:layout_constraintStart_toEndOf="@+id/layoutRating"
        app:layout_constraintTop_toTopOf="@+id/layoutRating" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgRating"
        android:layout_width="10dp"
        android:layout_marginStart="2dp"
        android:layout_height="wrap_content"
        tools:text="5"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_2" />

    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/progressBarRating"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgTotalRatingNumber"
        android:minWidth="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="13.4rb"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_2" />

</LinearLayout>