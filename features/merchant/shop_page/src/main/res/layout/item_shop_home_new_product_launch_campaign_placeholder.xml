<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_minus12"
    android:layout_marginRight="@dimen/dp_minus12"
    android:layout_marginBottom="@dimen/dp_8">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/text_title_shimmering"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="@dimen/dp_12" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/banner_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_carousel_height"
        android:layout_marginTop="@dimen/dp_8"
        android:minHeight="@dimen/dp_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_shimmering"
        app:layout_constraintVertical_bias="0"
        app:unify_image_corner_radius="0"
        app:unify_image_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>
