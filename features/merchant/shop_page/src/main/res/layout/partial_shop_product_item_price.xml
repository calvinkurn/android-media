<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_original_price"
        style="@style/TextView.Micro.BlackDisabled.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:visibility="gone"
        tools:text="@string/app_name"
        tools:visibility="visible" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexWrap="wrap">

        <TextView
            android:id="@+id/text_view_displayed_price"
            style="@style/TextView.Small.OrangeRed.Bold"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/text_view_discount_percentage"
            style="@style/TextView.Micro.WhitePrimary"
            android:background="@drawable/bg_rounded_corners_red"
            android:padding="@dimen/dp_3"
            android:visibility="gone"
            tools:text="@string/app_name"
            tools:visibility="visible" />

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>