<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_npl_timer"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="6dp"
    android:paddingRight="8dp"
    android:paddingBottom="6dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_time_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/clr_dms_icon_white"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Dirilis dalam " />

    <com.tokopedia.unifycomponents.timer.TimerUnifySingle
        android:id="@+id/npl_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:timer_unify_single_variant="alternate" />

</LinearLayout>

