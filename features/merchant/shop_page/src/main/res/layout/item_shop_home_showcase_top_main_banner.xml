<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconChevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_color_light_enable="@color/Unify_NN900"
        app:icon_color_night_enable="@color/Unify_NN900"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="@+id/tpgTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tpgTitle" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        tools:text="Explore categories" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgFirstBanner"
        android:layout_width="328dp"
        android:layout_height="328dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tpgTitle"
        app:unify_image_corner_radius="8"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgFirstBannerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imgFirstBanner"
        app:layout_constraintEnd_toEndOf="@+id/imgFirstBanner"
        app:layout_constraintStart_toStartOf="@+id/imgFirstBanner"
        app:layout_constraintTop_toTopOf="@+id/imgFirstBanner"
        app:layout_constraintVertical_bias="1.0"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Power Bank"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgFirstBanner"
        app:layout_constraintTop_toBottomOf="@+id/imgFirstBanner"
        tools:itemCount="2"
        tools:listitem="@layout/item_shop_home_showcase" />

</androidx.constraintlayout.widget.ConstraintLayout>