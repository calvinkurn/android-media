<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/merchantVoucherReload"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="0dp"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/Neutral_N50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:text="@string/shop_page_reload_description"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageReload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageReload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@+id/textReload"
            app:layout_constraintEnd_toStartOf="@+id/textReload"
            app:layout_constraintTop_toTopOf="@+id/textReload"
            app:srcCompat="@drawable/ic_reload"
            tools:ignore="RtlSymmetry" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textReload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/shop_page_reload"
            android:textColor="@color/Green_G500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>