            android:visibility="visible"
            app:layout_constraintLeft_toRightOf="@id/shop_performance_widget_loader_description"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            app:layout_constraintTop_toBottomOf="@id/loader_shop_img">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/shop_performance_widget_loader_title_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                app:corners="10"
                app:layout_constraintBottom_toTopOf="@id/shop_performance_widget_loader_description_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
