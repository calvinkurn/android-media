            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/shop_performance_widget_loader_description"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_4"
