<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="heading_4"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.Title.Bold"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        tools:text="Semua Etalase"/>

    <ImageView
        android:id="@+id/image_view_etalase_badge"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@drawable/ic_badge_shop_official"
        android:contentDescription="@string/shop_showcase_product_carousel_badge" />

</LinearLayout>