<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.tokopedia.design.label.LabelView
        android:id="@+id/noteLabelView"
        style="@style/LabelLayout"
        android:layout_height="@dimen/dp_64"
        android:paddingRight="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:lv_title_text_style="bold"
        app:lv_title="@string/shop_note_title_2"
        app:lv_title_text_size="@dimen/sp_16"
        app:lv_content_text_size="@dimen/sp_14"
        app:lv_content_color="@color/tkpd_main_green"
        app:lv_content="@string/shop_info_label_manage_note"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"/>

        <include layout="@layout/loading_layout"
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>