<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16">

    <com.tokopedia.shop.common.view.ShopPageLabelView
        android:id="@+id/noteLabelView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        app:shop_lv_title="@string/shop_note_title"
        app:shop_lv_title_text_size="@dimen/sp_16"
        app:shop_lv_title_color="@color/Unify_N700"
        app:shop_lv_content_text_size="@dimen/sp_14"
        app:shop_lv_content_color="@color/Unify_G400" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.abstraction.base.view.recyclerview.VerticalRecyclerView
            android:id="@+id/recyclerViewNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            app:has_divider_left_padding="false"/>

        <include layout="@layout/loading_layout"
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>