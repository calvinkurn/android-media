<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false">

    <include
        android:id="@+id/layout_shop_product_carousel_title"
        layout="@layout/partial_item_new_shop_carousel_title" />

    <com.tokopedia.carouselproductcard.CarouselProductCardView
        android:id="@+id/recyclerViewCarousel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:descendantFocusability="blocksDescendants"
        android:scrollbars="none"
        app:useDefaultItemDecorator="false" />

</LinearLayout>