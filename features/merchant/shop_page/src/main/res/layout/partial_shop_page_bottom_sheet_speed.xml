<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_speed_content"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_24"
        tools:src="@drawable/ic_shop_reputation_speed_default" />

    <TextView
        android:id="@+id/text_view_speed_info"
        style="@style/TextView.Small.BlackDisabled.Bold"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        tools:text="@string/app_name" />

    <TextView
        style="@style/TextView.Small.BlackDisabled"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:text="@string/shop_page_bottom_sheet_speed_shop_info_last_12_months" />
</LinearLayout>