<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgShipment"
        android:layout_width="48dp"
        tools:layout_height="48dp"
        tools:layout_width="48dp"
        android:scaleType="fitCenter"
        android:layout_alignTop="@id/tpgShipmentName"
        android:layout_alignBottom="@id/tpgShipmentServices"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgShipmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/imgShipment"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="JNE" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgShipmentServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tpgShipmentName"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/imgShipment"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/Unify_NN600"
        app:typographyType="paragraph_3"
        tools:text="JNE Trucking, Same Day, Yakin Esok Sampai, Ongkos Kirim Ekonomi" />


    <View
        android:id="@+id/dividerShopSupportedShipment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imgShipment"
        android:layout_marginTop="12dp"
        android:background="@color/Unify_NN50" />

</RelativeLayout>