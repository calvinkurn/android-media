<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.abstraction.base.view.widget.SwipeToRefresh xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeToRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/shopPageLoadingState"
            layout="@layout/partial_shop_page_loading_state"
            android:visibility="gone" />

        <include
            android:id="@+id/shopPageErrorState"
            layout="@layout/partial_empty_page_error"
            android:visibility="gone" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            app:elevation="0dp">

            <include
                layout="@layout/partial_new_shop_page_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                app:layout_scrollFlags="scroll"
                tools:visibility="gone" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                style="@style/TabBar.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tab_layout_shop_page"
                app:layout_scrollFlags="enterAlways"
                app:tabIndicator="@drawable/tab_indicator_shop_page"
                app:tabMode="fixed" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:can_swipe="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <include layout="@layout/bottom_sheet_layout" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_chat_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:contentDescription="@string/content_desc_button_chat"
            app:backgroundTint="@color/Unify_N0"
            app:fabCustomSize="@dimen/dp_56"
            app:layout_behavior="com.tokopedia.shop.ShopPageFABBehaviour"
            app:maxImageSize="@dimen/dp_32"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_chat_floating_button_old" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:contentDescription="@string/content_desc_button_chat"
            app:backgroundTint="@color/Unify_N0"
            app:fabCustomSize="@dimen/dp_56"
            app:layout_behavior="com.tokopedia.shop.ShopPageFABBehaviour"
            app:maxImageSize="@dimen/dp_28"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_chat_floating_button" />

        <com.tokopedia.stickylogin.view.StickyLoginView
            android:id="@+id/sticky_login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone"
            app:sticky_highlight_color="@color/Unify_G500"
            app:sticky_left_icon="@drawable/ic_toped_widget_login"
            tools:visibility="visible" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>
