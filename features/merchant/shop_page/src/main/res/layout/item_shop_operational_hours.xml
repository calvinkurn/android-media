<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dp_12">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOperationalDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Senin"
        app:typographyType="body_2"
        android:textColor="@color/Unify_N700_68"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvOperationalDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        tools:text="Jam 07.00 - 18.00 WIB"
        android:textColor="@color/Unify_N700_96"
        />

    <View
        android:id="@+id/item_separator_ops_hour"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/tvOperationalDay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/Unify_N100"
        />

</androidx.constraintlayout.widget.ConstraintLayout>