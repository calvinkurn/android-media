<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_shop_img"
        app:corners="@integer/radius_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dp_8"
        android:layout_width="@dimen/shop_page_logo_width"
        android:layout_height="@dimen/shop_page_logo_width" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_shop_name"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintStart_toEndOf="@+id/loader_shop_img"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_shop_location"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintStart_toEndOf="@+id/loader_shop_img"
        app:layout_constraintTop_toBottomOf="@+id/loader_shop_name" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_shop_follower"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintStart_toEndOf="@+id/loader_shop_img"
        app:layout_constraintTop_toBottomOf="@+id/loader_shop_location" />


    <!--  Contents  -->

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_shop_img_1"
        app:corners="@integer/radius_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_shop_img"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="@dimen/shop_page_logo_width"
        android:layout_height="@dimen/shop_page_logo_width" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_shop_name_1"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintStart_toEndOf="@+id/loader_shop_img_1"
        app:layout_constraintTop_toBottomOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_shop_location_1"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintStart_toEndOf="@+id/loader_shop_img"
        app:layout_constraintTop_toBottomOf="@+id/loader_shop_name" />


</androidx.constraintlayout.widget.ConstraintLayout>


