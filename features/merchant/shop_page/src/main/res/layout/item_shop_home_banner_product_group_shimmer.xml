<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerMainBanner"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect" />

    <include
        android:id="@+id/shimmerFirstProduct"
        layout="@layout/item_shop_home_product_carousel_product_shimmer"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerMainBanner" />

    <include
        android:id="@+id/shimmerSecondProduct"
        layout="@layout/item_shop_home_product_carousel_product_shimmer"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/shimmerFirstProduct"
        app:layout_constraintTop_toBottomOf="@+id/shimmerMainBanner" />

    <include
        android:id="@+id/shimmerThirdProduct"
        layout="@layout/item_shop_home_product_carousel_product_shimmer"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/shimmerSecondProduct"
        app:layout_constraintTop_toBottomOf="@+id/shimmerMainBanner" />

</androidx.constraintlayout.widget.ConstraintLayout>