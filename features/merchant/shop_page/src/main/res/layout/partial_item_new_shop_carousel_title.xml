<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_title"
        app:typographyType="heading_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.Title.Bold"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="@string/shop_page_label_featured_product" />

    <com.tokopedia.gm.resource.GMImageView
        android:id="@+id/image_view_etalase_badge"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:visibility="gone"
        tools:visibility="visible"/>

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tvSeeAll"
        style="@style/TextView.Title.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/label_see_all"
        android:padding="@dimen/dp_4"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>