<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_seller_widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/spacing_lvl2"
    android:layout_marginRight="@dimen/spacing_lvl4"
    android:layout_marginBottom="@dimen/spacing_lvl3"
    android:visibility="gone"
    app:cardCornerRadius="@dimen/spacing_lvl3"
    app:contentPadding="@dimen/dp_12"
    app:layout_constraintBottom_toTopOf="@+id/tickerShopStatus"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/shop_page_header_content"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.topads.sdk.view.FlowLayout
            android:id="@+id/container_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/container_lottie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shop_page_sgc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="body_2"
                tools:text="Ayo cobain live streaming" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:paddingTop="@dimen/spacing_lvl2"
                app:srcCompat="@drawable/ic_play_beta_badge" />

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_page_play_widget_sgc_content"
                app:typographyType="body_2" />
        </com.tokopedia.topads.sdk.view.FlowLayout>

        <FrameLayout
            android:id="@+id/container_lottie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/container_text"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="120dp"
                android:layout_height="36dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
