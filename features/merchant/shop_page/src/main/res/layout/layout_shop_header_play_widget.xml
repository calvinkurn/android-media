<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_play_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible">

    <androidx.cardview.widget.CardView
        android:id="@+id/play_sgc_widget_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl3"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toTopOf="@+id/tickerShopStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_page_header_content"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0"
            android:padding="@dimen/spacing_lvl3">

            <com.tokopedia.topads.sdk.view.FlowLayout
                android:id="@+id/play_sgc_container_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@id/play_sgc_btn_start_live"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/play_sgc_lets_try_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_2"
                    tools:text="Ayo cobain live streaming" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_lvl2"
                    android:paddingTop="@dimen/spacing_lvl2"
                    app:srcCompat="@drawable/ic_play_beta_badge" />

                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_page_play_widget_sgc_content"
                    android:textColor="@color/Unify_N700_96"
                    app:typographyType="body_2" />

            </com.tokopedia.topads.sdk.view.FlowLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/play_sgc_btn_start_live"
                android:layout_width="@dimen/play_sgc_btn_start_live_width"
                android:layout_height="@dimen/play_sgc_btn_start_live_height"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/play_sgc_container_desc"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="false" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
