<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_shop_img_1"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_110"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:corners="@integer/radius_40"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_shop_name_1"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_shop_img_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_shop_location_1"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_shop_name_1" />

</androidx.constraintlayout.widget.ConstraintLayout>