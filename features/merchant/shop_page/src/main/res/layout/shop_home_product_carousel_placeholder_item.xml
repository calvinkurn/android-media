<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_shop_img_1"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:loader_corner_radius="20dp"
        app:loader_type="rect"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_shop_name_1"
        android:layout_width="80dp"
        android:layout_height="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_shop_img_1" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_shop_location_1"
        android:layout_width="56dp"
        android:layout_height="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_shop_name_1" />

</androidx.constraintlayout.widget.ConstraintLayout>