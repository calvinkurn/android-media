<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_6"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/image_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_4"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <com.tokopedia.shop.product.view.widget.SquareImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_kupon"
                    tools:visibility="visible" />

            </android.support.v7.widget.CardView>

            <include layout="@layout/partial_shop_product_item_sold_out" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextView.Small.Bold"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:lineSpacingExtra="5sp"
                android:lines="2"
                android:textColor="@color/font_black_primary_70"
                tools:text="@string/app_name" />

            <include
                layout="@layout/partial_shop_product_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8" />

            <include
                layout="@layout/partial_shop_product_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include layout="@layout/partial_shop_product_item_badge" />

            <include
                layout="@layout/partial_shop_product_free_ongkir_banner"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_8" />

        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/partial_shop_product_item_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>