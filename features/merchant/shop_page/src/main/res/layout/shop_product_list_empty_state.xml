<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginBottom="8dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="fitCenter"
        android:contentDescription="@null"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_empty_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/no_result_image"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_empty_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_empty_title_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/no_result_image"
        android:textColor="@color/Unify_N700_44"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_result_empty"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/no_result_image"
        android:layout_marginTop="6dp" />

</RelativeLayout>
