<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_shop_info_satisfied"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout style="@style/LabelLayout">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Title.Bold"
            android:text="@string/shop_info_label_satisfied" />
    </LinearLayout>

    <LinearLayout
        style="@style/LabelLayout"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_score_good"
                style="@style/TextView.Title"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                tools:text="@string/app_name" />

            <ImageView
                android:id="@+id/image_view_smiley_good"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                app:srcCompat="@drawable/ic_smiley_good" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_score_neutral"
                style="@style/TextView.Title"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                tools:text="@string/app_name" />

            <ImageView
                android:id="@+id/image_view_smiley_neutral"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                app:srcCompat="@drawable/ic_smiley_neutral" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_score_bad"
                style="@style/TextView.Title"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                tools:text="@string/app_name" />

            <ImageView
                android:id="@+id/image_view_smiley_bad"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                app:srcCompat="@drawable/ic_smiley_bad" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>