<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="24dp"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_1"
        android:textColor="@color/Unify_N700"
        android:text="@string/shop_page_label_description" />
    
    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="16dp"
        app:typographyType="body_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_68"
        android:id="@+id/shopInfoDescription"
        tools:text="@string/shop_page_label_favorite"/>

    <LinearLayout
        android:id="@+id/go_apotik_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_sia_title"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN600"
            android:text="@string/shop_info_go_apotik_sia_number_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_sia_description"
            app:typographyType="body_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN600"
            tools:text="440/02/SIA-35.79/2017/1.003" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_sipa_title"
            android:layout_marginTop="16dp"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN600"
            android:text="@string/shop_info_go_apotik_sipa_number_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_sipa_description"
            app:typographyType="body_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN600"
            tools:text="19741110/SIPA-35.79/2017/1.003" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_apj_title"
            android:layout_marginTop="16dp"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN600"
            android:text="@string/shop_info_go_apotik_apj_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_apj_description"
            app:typographyType="body_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN600"
            tools:text="Hariyadi S.Si.,Apt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_info_location_grey"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            android:id="@+id/shopInfoLocation"
            tools:text="@string/shop_page_label_favorite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_info_open_label_grey"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            android:textColor="@color/Unify_N700_68"
            android:id="@+id/shopInfoOpenSince"
            tools:text="@string/shop_info_label_open_since_v3"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_shop_reputation_badge"
        android:contentDescription="@string/content_desc_image_view_shop_reputation_badge"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>