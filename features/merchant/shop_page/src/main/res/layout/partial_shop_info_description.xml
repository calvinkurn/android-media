<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_8"
    android:paddingTop="@dimen/dp_24"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        style="@style/TextView.Title.Bold"
        android:text="@string/shop_page_label_description" />
    
    <TextView
        android:layout_marginTop="@dimen/dp_16"
        style="@style/TextView.Micro.BlackSecondary"
        android:id="@+id/shopInfoDescription"
        tools:text="@string/shop_page_label_favorite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_info_location_grey"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"/>

        <com.tokopedia.design.component.TextViewCompat
            style="@style/TextView.Micro.BlackSecondary"
            android:id="@+id/shopInfoLocation"
            tools:text="@string/shop_page_label_favorite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_info_open_label_grey"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"/>

        <com.tokopedia.design.component.TextViewCompat
            style="@style/TextView.Micro.BlackSecondary"
            android:id="@+id/shopInfoOpenSince"
            tools:text="@string/shop_info_label_open_since_v3"/>

    </LinearLayout>


</LinearLayout>