<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="24dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/shopInfoTitleContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_1"
            android:textColor="@color/Unify_NN950"
            android:text="@string/shop_page_label_description" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/badgeLicensedApotek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            app:labelType="highlight_light_green"
            android:layout_gravity="center"
            tools:text="Apotek Berlisensi"
            tools:visibility="visible" />

    </LinearLayout>
    
    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="11dp"
        app:typographyType="body_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950_68"
        android:id="@+id/shopInfoDescription"
        tools:text="@string/text_shop_no_product_description_seller"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_info_location_grey"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950_68"
            app:typographyType="body_3"
            android:id="@+id/shopInfoLocation"
            tools:text="Kota Cirebon (+23 lokasi lainnya)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_info_open_label_grey"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            android:textColor="@color/Unify_NN950_68"
            android:id="@+id/shopInfoOpenSince"
            tools:text="@string/shop_info_label_open_since_v3"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_shop_reputation_badge"
        android:contentDescription="@string/content_desc_image_view_shop_reputation_badge"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/shopGoApotikContainer"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:background="@color/Unify_NN50" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.tokopedia.unifyprinciples.Typography
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="body_1"
                android:textColor="@color/Unify_NN950"
                android:text="@string/shop_page_label_nearest_pickup" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/btnLihatLokasi"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_GN500"
                android:text="@string/shop_page_label_see_location" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_marginTop="12dp"
            app:typographyType="body_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950_68"
            android:id="@+id/shopInfoNearestPickupLocation"
            tools:text="Epicentrum Walk, Jl. H. R. Rasuna Said, Karet Kuningan, Setiabudi, Jakarta Selatan, Setiabudi 12940"/>

        <LinearLayout
            android:id="@+id/go_apotik_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_apj_title"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                android:text="@string/shop_info_go_apotik_apj_title" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_apj_description"
                app:typographyType="body_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                tools:text="Hariyadi S.Si.,Apt" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_sia_title"
                android:layout_marginTop="12dp"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                android:text="@string/shop_info_go_apotik_sia_number_title" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_sia_description"
                app:typographyType="body_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                tools:text="440/02/SIA-35.79/2017/1.003" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_sipa_title"
                android:layout_marginTop="12dp"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                android:text="@string/shop_info_go_apotik_sipa_number_title" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_sipa_description"
                app:typographyType="body_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                tools:text="19741110/SIPA-35.79/2017/1.003" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_open_hours_title"
                android:layout_marginTop="12dp"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                android:text="@string/shop_info_go_apotik_open_hours" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_open_hours_description"
                app:typographyType="body_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN600"
                android:maxLines="7"
                tools:text="Minggu - Senin: 16:00 - 19:00\nSelasa: 08.00 - 16:00" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>