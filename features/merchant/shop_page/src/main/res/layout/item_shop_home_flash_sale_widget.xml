<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_minus12"
    android:layout_marginRight="@dimen/dp_minus12"
    android:layout_marginBottom="@dimen/dp_8">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgp_flash_sale_campaign_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/shop_page_label_flash_sale_toko" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_tnc_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5.5"
        app:layout_constraintBottom_toBottomOf="@id/tgp_flash_sale_campaign_name"
        app:layout_constraintLeft_toRightOf="@id/tgp_flash_sale_campaign_name"
        app:layout_constraintTop_toTopOf="@id/tgp_flash_sale_campaign_name"
        app:srcCompat="@drawable/ic_information" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgp_flash_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shop_page_label_flash_sale"
        app:layout_constraintLeft_toLeftOf="@id/tgp_flash_sale_campaign_name"
        app:layout_constraintTop_toBottomOf="@id/tgp_flash_sale_campaign_name"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgp_cta_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:text="@string/shop_page_label_see_all"
        android:textColor="@color/Unify_G500"
        app:layout_constraintBottom_toBottomOf="@id/tgp_flash_sale"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tgp_flash_sale_campaign_name"
        app:typographyType="body_3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tgp_flash_sale">

        <View
            android:id="@+id/bg_multiple"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_184"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bg_single"
            android:layout_width="@dimen/unify_space_0"
            android:layout_height="@dimen/unify_space_0"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bg_double"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_212"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/flash_sale_count_down_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_marginTop="@dimen/unify_space_8"
            android:background="@drawable/bg_rounded_rect_flash_sale_count_down_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tgp_flash_sale_timer_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_8"
                android:textColor="@color/Unify_Static_White"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Dimulai dalam" />

            <com.tokopedia.unifycomponents.timer.TimerUnifySingle
                android:id="@+id/tus_flash_sale_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_4"
                android:layout_marginEnd="@dimen/unify_space_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tgp_flash_sale_timer_desc"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:timer_unify_single_variant="alternate" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/flash_sale_reminder_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/unify_space_16"
            android:background="@drawable/bg_rounded_rect_flash_sale_remind_me"
            android:paddingHorizontal="@dimen/unify_space_8"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_remind_me_bell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_fs_remind_me_false" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tgp_remind_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/unify_space_8"
                android:layout_marginStart="@dimen/unify_space_4"
                android:text="@string/shop_page_label_remind_me"
                android:textColor="@color/clr_dms_AD31353B"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_remind_me_bell"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_flash_sale_product_carousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flash_sale_count_down_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            app:layout_constraintTop_toBottomOf="@id/rv_flash_sale_product_carousel"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>