<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgp_flash_sale_toko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_16"
        android:text="@string/shop_page_label_flash_sale_toko"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5.5"
        app:layout_constraintBottom_toBottomOf="@id/tgp_flash_sale_toko"
        app:layout_constraintLeft_toRightOf="@id/tgp_flash_sale_toko"
        app:layout_constraintTop_toTopOf="@id/tgp_flash_sale_toko"
        app:srcCompat="@drawable/ic_information" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgp_flash_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shop_page_label_flash_sale"
        app:layout_constraintLeft_toLeftOf="@id/tgp_flash_sale_toko"
        app:layout_constraintTop_toBottomOf="@id/tgp_flash_sale_toko"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgp_cta_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:text="@string/shop_page_label_see_all"
        android:textColor="@color/unify_G500"
        app:layout_constraintBottom_toBottomOf="@id/tgp_flash_sale"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tgp_flash_sale_toko"
        app:typographyType="body_3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tgp_flash_sale">

        <View
            android:id="@+id/bg_flash_sale"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:background="@drawable/bg_flash_sale"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/flash_sale_count_down_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_rounded_rect_flash_sale_count_down_view" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tgp_flash_sale_timer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_8"
                android:textColor="@color/Unify_Static_White"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Dimulai dalam" />

            <com.tokopedia.unifycomponents.timer.TimerUnifySingle
                android:id="@+id/tus_flash_sale_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tgp_flash_sale_timer_title"
                app:layout_constraintTop_toTopOf="parent"
                app:timer_unify_single_variant="alternate" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_flash_sale_product_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flash_sale_count_down_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>