<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.design.loading.LoadingStateView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loadingStateView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:lsv_full_screen="true"
    app:lsv_error_layout="@layout/partial_empty_page_error"
    app:lsv_loading_layout="@layout/partial_shop_note_detail_loading_state">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDate"
                style="@style/TextView.Micro.BlackDisabled"
                android:lineSpacingExtra="@dimen/sp_6"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/textViewDesc"
                style="@style/TextView.Small.BlackSecondary"
                android:layout_marginTop="@dimen/dp_8"
                android:lineSpacingExtra="@dimen/sp_6"
                tools:text="@string/app_name" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.tokopedia.design.loading.LoadingStateView>