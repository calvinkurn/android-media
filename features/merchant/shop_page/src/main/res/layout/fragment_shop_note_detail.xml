<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.design.loading.LoadingStateView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loadingStateView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    app:lsv_full_screen="true"
    app:lsv_error_layout="@layout/partial_empty_page_error"
    app:lsv_loading_layout="@layout/partial_shop_note_detail_loading_state">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_16"
            android:orientation="vertical">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_44"
                app:typographyType="body_3"
                android:lineSpacingExtra="@dimen/sp_6"
                tools:text="@string/app_name" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/textViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typographyType="body_2"
                android:textColor="@color/Unify_N700_68"
                android:layout_marginTop="@dimen/dp_8"
                android:lineSpacingExtra="@dimen/sp_6"
                tools:text="@string/app_name" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.tokopedia.design.loading.LoadingStateView>