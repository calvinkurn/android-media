<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    android:showDividers="middle">

    <Button
        android:id="@+id/button_manage_shop"
        style="@style/Button.Shop.Page.Header"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/shop_page_label_manage_shop"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        tools:visibility="visible"/>

    <Button
        android:id="@+id/button_add_product"
        style="@style/Button.Shop.Page.Header.Green"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/shop_page_label_add_product"
        android:visibility="gone"
        tools:visibility="visible"/>

    <Button
        android:id="@+id/button_chat_seller"
        style="@style/Button.Shop.Page.Header"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/shop_page_label_chat_to_seller"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:visibility="gone"/>

    <Button
        android:id="@+id/button_favourite_shop"
        style="@style/Button.Shop.Page.Header.Green"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/shop_page_label_favorite"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_already_favourite_shop"
        style="@style/Button.Shop.Page.Header"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/shop_page_label_already_favorite"
        android:visibility="gone" />
</LinearLayout>