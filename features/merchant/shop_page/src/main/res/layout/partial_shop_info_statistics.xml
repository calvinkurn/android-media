<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_8"
    android:paddingTop="@dimen/dp_16">

    <TextView style="@style/TextView.Title.Bold"
        android:text="@string/shop_info_label_statistic"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_64"
        android:orientation="horizontal"
        android:id="@+id/labelViewReview"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productQualityValue"
                style="@style/TextView.Small.Bold"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                tools:text="@string/app_name" />

            <RatingBar
                style="@style/RatingBar.Small"
                android:id="@+id/productRating"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:numStars="5"
                android:rating="4" />

            <TextView
                android:id="@+id/totalReview"
                style="@style/TextView.Micro.BlackDisabled"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                tools:text="@string/app_name" />

        </LinearLayout>

        <TextView style="@style/TextView.Small.Green"
            android:id="@+id/textSeeRating"
            android:text="@string/see_label"
            android:paddingRight="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_line_separator_thin"/>

    <com.tokopedia.design.label.LabelView
        android:id="@+id/labelViewDiscussion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        app:lv_content="@string/see_label"
        app:lv_title="@string/shop_info_title_tab_discussion"
        app:lv_title_text_size="@dimen/sp_14"
        app:lv_content_text_size="@dimen/sp_14"
        app:lv_content_color="@color/tkpd_main_green"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_line_separator_thin"/>

    <com.tokopedia.design.label.LabelView
        android:id="@+id/labelViewProcessOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        app:lv_content="@string/see_label"
        app:lv_title="@string/shop_info_label_process_time"
        app:lv_title_text_size="@dimen/sp_14"
        app:lv_content_text_size="@dimen/sp_14"
        app:lv_content_color="@color/font_black_disabled_38"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_line_separator_thin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_24">

        <TextView
            style="@style/TextView.Small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/shop_page_label_reputation" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/shopReputationView"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="@dimen/dp_24"/>

            <TextView
                android:id="@+id/totalPoin"
                style="@style/TextView.Micro.BlackDisabled"
                tools:text="@string/app_name" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_line_separator_thin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Small"
            android:text="@string/shop_info_label_satisfied" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_smiley_good"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    app:srcCompat="@drawable/ic_smiley_good" />

                <TextView
                    android:id="@+id/textViewScoreGood"
                    style="@style/TextView.Micro.BlackDisabled"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_4"
                    tools:text="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_smiley_neutral"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    app:srcCompat="@drawable/ic_smiley_neutral" />

                <TextView
                    android:id="@+id/textViewScoreNeutral"
                    style="@style/TextView.Micro.BlackDisabled"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_4"
                    tools:text="@string/app_name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_smiley_bad"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    app:srcCompat="@drawable/ic_smiley_bad" />

                <TextView
                    android:id="@+id/textViewScoreBad"
                    style="@style/TextView.Micro.BlackDisabled"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_4"
                    tools:text="@string/app_name" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_line_separator_thin"/>

</LinearLayout>