<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <!--  Content 1  -->

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/loader_shop_img_1"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/image_guide_line_grid"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            app:corners="@integer/radius_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_img" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_shop_name_1"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_img_1" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_shop_location_1"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_name_1" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/loader_shop_img_2"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/image_guide_line_grid"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            app:corners="@integer/radius_40"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_img" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_shop_name_2"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_img_2" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_shop_location_2"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_name_2" />

        <!--  Content 2  -->

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/loader_shop_img_3"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/image_guide_line_grid"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            app:corners="@integer/radius_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_location_1" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_shop_name_3"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_img_3" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_shop_location_3"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_name_3" />

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/loader_shop_img_4"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/image_guide_line_grid"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            app:corners="@integer/radius_40"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_location_2" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_shop_name_4"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_img_4" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/loader_shop_location_4"
            android:layout_width="@dimen/image_guide_line_grid"
            android:layout_height="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loader_shop_name_4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.shop.product.view.widget.NestedWebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</FrameLayout>