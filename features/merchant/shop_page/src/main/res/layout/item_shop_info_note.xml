<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.design.label.LabelView
        android:id="@+id/label_view"
        style="@style/LabelLayout"
        android:layout_height="@dimen/dp_64"
        android:paddingRight="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        app:lv_title_text_size="@dimen/sp_14"
        app:lv_content_text_size="@dimen/sp_14"
        app:lv_content_color="@color/tkpd_main_green"
        app:lv_content="@string/read"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/bg_list_separator"/>
</LinearLayout>