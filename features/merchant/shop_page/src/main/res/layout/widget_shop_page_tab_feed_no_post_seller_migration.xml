<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingEnd="@dimen/layout_lvl2">

    <com.tokopedia.shop.home.ShopCarouselBannerImageUnify
        android:id="@+id/ivTabFeedNoPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleTabFeedNoPost"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTabFeedNoPost"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/seller_migration_tab_feed_no_post_title"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescTabFeedNoPost"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/seller_migration_tab_feed_no_post_description"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleTabFeedNoPost"
        android:layout_marginTop="@dimen/spacing_lvl4"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnPlayStoreTabFeedNoPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/seller_migration_bottom_sheet_button"
        app:unifyButtonSize="medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescTabFeedNoPost"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSellerMigrationLearnMoreLink"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:paddingBottom="@dimen/spacing_lvl4"
        android:gravity="center"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/btnPlayStoreTabFeedNoPost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Pelajari keuntungan lainnya di sini"/>

</androidx.constraintlayout.widget.ConstraintLayout>