<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/dp_4"
    android:paddingEnd="@dimen/dp_4"
    android:paddingBottom="@dimen/dp_16"
    android:minHeight="@dimen/dp_150">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/icTitleOpsHourBottomsheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_ops_hour_bottomsheet"
        android:layout_marginTop="@dimen/dp_8"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/icTitleOpsHourBottomsheet"
        app:layout_constraintTop_toTopOf="@id/icTitleOpsHourBottomsheet"
        app:layout_constraintBottom_toBottomOf="@id/icTitleOpsHourBottomsheet"
        android:layout_marginStart="@dimen/dp_12"
        android:text="@string/shop_ops_hour_bottomsheet_description"
        app:typographyType="body_3"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shop_operational_hours_list"
        app:layout_constraintTop_toBottomOf="@id/icTitleOpsHourBottomsheet"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loaderUnifyOperationalHours"
        app:loader_type="circular"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>