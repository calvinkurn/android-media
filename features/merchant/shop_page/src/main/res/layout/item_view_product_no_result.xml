<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_retry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <!-- Untuk onRetry satu halaman -->
        <ImageView
            android:id="@+id/no_result_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/ic_empty_state" />

        <TextView
            android:id="@+id/text_view_empty_title_text"
            style="@style/TextView.Title"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            tools:text="@string/shop_product_empty_product_title_no_etalase"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_view_empty_content_text"
            style="@style/TextView.Small.BlackSecondary"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:maxLines="4"
            android:maxWidth="250dp"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/text_view_empty_content_item_text"
            style="@style/TextView.Title"
            android:layout_margin="@dimen/dp_20"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Cari jam di tokopedia"/>

        <!-- text will be override programmatically -->
        <Button
            android:id="@+id/button_add_promo"
            style="@style/Button.Submit.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_15"
            android:maxWidth="@dimen/dp_250"
            android:minWidth="@dimen/dp_250"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="@string/app_name" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3" />

    </LinearLayout>
</LinearLayout>
