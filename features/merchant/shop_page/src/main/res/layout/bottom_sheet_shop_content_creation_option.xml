<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_shorts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_shorts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/shop_page_shorts_creation_label"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N75"
        app:layout_constraintStart_toStartOf="@id/ll_shorts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_shorts"
        />

    <LinearLayout
        android:id="@+id/ll_broadcaster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/ll_shorts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.tokopedia.iconunify.IconUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon_name="VIDEO"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/shop_page_broadcast_creation_label"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
