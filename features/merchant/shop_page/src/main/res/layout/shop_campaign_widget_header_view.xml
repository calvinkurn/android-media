<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingVertical="6dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_campaign_widget_header_title_light_mode"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:ellipsize="end"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:singleLine="true"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cta_view"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        tools:text="Title"
        tools:visibility="visible" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/cta_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_campaign_widget_header_cta_light_mode"
        android:elevation="4dp"
        android:padding="6dp"
        android:visibility="gone"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="@id/text_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_title"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>