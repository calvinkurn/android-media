<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_16"
    android:paddingTop="?actionBarSize"
    app:layout_scrollFlags="scroll|enterAlways">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/shopImageView"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            app:srcCompat="@drawable/ic_loading_toped"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/shopLabelIcon"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    app:srcCompat="@drawable/ic_badge_shop_gm"/>

                <TextView
                    android:id="@+id/shopName"
                    style="@style/TextView.Title.BlackPrimary"
                    tools:text="@string/app_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.tokopedia.design.reputation.ShopReputationView
                    android:id="@+id/shop_reputation_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    app:srv_medal_width="@dimen/shop_page_sub_info_medal_width" />

                <TextView
                    android:id="@+id/shopLabel"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:text="@string/official_store_label"/>

                <TextView
                    android:id="@+id/shopFollower"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_4"
                    tools:text="@string/official_store_label"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/chatButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:padding="@dimen/dp_10">

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/chatButtonText"
                style="@style/TextView.Micro.BlackSecondary"
                app:drawableLeftCompat="@drawable/ic_check"
                android:gravity="center"
                android:text="@string/shop_page_chat_label" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:padding="@dimen/dp_10">

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/favButtonText"
                style="@style/TextView.Micro.BlackSecondary"
                app:drawableLeftCompat="@drawable/ic_check"
                android:gravity="center"
                android:text="@string/shop_page_label_favorite" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>