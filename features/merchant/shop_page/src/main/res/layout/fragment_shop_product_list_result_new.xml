<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="false">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:background="@android:color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                app:layout_anchor="@id/app_bar_layout_etalase_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingStart="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_8"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_layout_etalase_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppBarNoBottomShadow"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:background="@drawable/card_shadow_bottom">

                <LinearLayout
                    android:id="@+id/vg_etalase_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_scrollFlags="enterAlways">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_etalase"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_8" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/v_etalase_more"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:layout_gravity="end|center_vertical"
                        android:padding="@dimen/dp_2"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/dp_8"
                        app:cardElevation="@dimen/dp_2"
                        app:cardUseCompatPadding="false">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/dp_4"
                            app:srcCompat="@drawable/ic_etalase_show_more_hamburger" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>
</RelativeLayout>