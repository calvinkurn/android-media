<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_showcase_item_slider_medium"
        android:layout_width="@dimen/dp_132"
        android:layout_height="@dimen/dp_132"
        app:unify_image_type="rect"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_showcase_name_item_slider_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:textColor="@color/Unify_NN950_96"
        tools:text="Bicycle Bag"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        />

</LinearLayout>