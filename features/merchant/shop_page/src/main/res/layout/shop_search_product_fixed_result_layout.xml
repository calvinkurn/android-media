<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_16"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_label_search_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"


        android:singleLine="true"
        android:textColor="@color/clr_f531353b"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="asdasdasdasdasdasdasgggasdadasdadasdasdfsdfdfsdfdad" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_label_search_purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/clr_f531353b"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_search_query"
        app:layout_constraintBottom_toBottomOf="parent"
        app:typographyType="body_3"
        tools:text="qqqq" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/red_300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</android.support.constraint.ConstraintLayout>