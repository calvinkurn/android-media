<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.tokopedia.shop.product.view.widget.StickySingleHeaderView
            android:id="@+id/stickySingleHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingBottom="@dimen/dp_8" />

        </com.tokopedia.shop.product.view.widget.StickySingleHeaderView>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <com.tokopedia.design.button.BottomActionView
        android:id="@+id/bottom_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/dp_20"
        android:visibility="visible"
        app:bav_1_display="true"
        app:bav_icon_1="@drawable/ic_icon"
        app:bav_label_1="@string/shop_info_sort_label" />

</RelativeLayout>