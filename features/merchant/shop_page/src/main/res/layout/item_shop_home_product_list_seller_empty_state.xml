<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/card_add_product"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        app:card_type="clear"
        app:layout_constraintEnd_toStartOf="@id/card_add_product_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/card_add_product_description">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_add_product_card">

            <com.tokopedia.unifycomponents.ImageUnify
                android:layout_width="match_parent"
                android:scaleType="center"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="1:1.49"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_shop_page_add_product" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify2>

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/card_add_product_description"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/card_add_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/card_description_background"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitEnd"
                app:layout_constraintDimensionRatio="1:1.45"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/card_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="@string/shop_product_seller_empty_state_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify2>

</androidx.constraintlayout.widget.ConstraintLayout>