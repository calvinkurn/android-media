<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_8"
    android:background="@android:color/white"
    app:layout_scrollFlags="scroll|enterAlways">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="@dimen/shop_page_logo_width"
            android:layout_height="@dimen/shop_page_logo_width"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/shopImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_loading_toped"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/shopStatusImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@color/tkpd_main_green"
                android:padding="@dimen/dp_12"
                tools:srcCompat="@drawable/ic_shop_close_v3"/>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/shopLabelIcon"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    app:srcCompat="@drawable/ic_badge_shop_gm"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/shopName"
                    style="@style/TextView.Title"
                    android:textColor="@android:color/black"
                    tools:text="@string/app_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/shopReputationView"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_12"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/shopLabel"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:text="@string/official_store_label"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/shopFollower"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginStart="@dimen/dp_4"
                    tools:text=" - 1000 followers"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonChat"
                    style="@style/Button.Shop.Page.Header"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:text="@string/shop_page_chat_label"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonManageShop"
                    style="@style/Button.Shop.Page.Header"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:text="@string/shop_page_label_manage_shop"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <Button
                    android:id="@+id/buttonFollow"
                    style="@style/Button.Shop.Page.Header.Green"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="@string/shop_page_label_follow"
                    android:visibility="gone"/>

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/buttonFollowed"
                    style="@style/Button.Shop.Page.Header"
                    android:layout_width="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    app:srcCompat="@drawable/ic_check_grey"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.tokopedia.shop.page.view.widget.ShopWarningTickerView
        android:id="@+id/shopWarningTickerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_8"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonActionAbnormal"
        style="@style/Button.Shop.Page.Header"
        android:layout_width="match_parent"
        android:text="@string/shop_page_label_manage_shop"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>