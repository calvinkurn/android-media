<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8">

            <com.tokopedia.shop.product.view.widget.SquareImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_kupon"
                tools:visibility="visible" />

            <include layout="@layout/partial_shop_product_item_sold_out"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextView.Small.BlackSecondary"
                android:ellipsize="end"
                android:lineSpacingExtra="5sp"
                android:maxLines="2"
                tools:text="@string/app_name" />

            <include
                layout="@layout/partial_shop_product_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8" />

            <include
                layout="@layout/partial_shop_product_item_badge"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/shop_badge_min_height"
                android:layout_marginTop="@dimen/dp_8" />
        </LinearLayout>

        <include
            layout="@layout/partial_shop_product_item_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>