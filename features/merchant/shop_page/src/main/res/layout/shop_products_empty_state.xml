<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:paddingTop="@dimen/dp_50"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewEmptyTitle"
        android:text="Tokomu masih kosong, nih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/font_black_primary_70"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewEmptyContent"
        android:text="Yuk, isi toko dengan produk-produk terbaikmu dan \nmulai berjualan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_35"
        android:textColor="@color/font_black_secondary_54"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

</LinearLayout>
