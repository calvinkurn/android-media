<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LabelLayout"
    android:minHeight="@dimen/dp_64"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/packageIcon"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_48"
        tools:src="@drawable/ic_smiley_good"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8">

        <TextView
            android:id="@+id/packageName"
            style="@style/TextView.Small"
            android:lineSpacingExtra="@dimen/sp_8"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/packageService"
            style="@style/TextView.Small.BlackDisabled"
            android:lineSpacingExtra="@dimen/sp_8"
            tools:text="@string/app_name"/>

    </LinearLayout>

</LinearLayout>

