query getShopInfo($shopIds: [Int!]!, $fields: [String!]!, $shopDomain: String){
    shopInfoByID(input: {
        shopIDs: $shopIds,
        fields: $fields,
        domain: $shopDomain}){
        result {
            favoriteData{
                totalFavorite
                alreadyFavorited
            }
        }
        error {
            message
        }
    }
}