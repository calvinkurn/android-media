<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.shop">

    <application android:label="@string/app_name">

        <activity
            android:name=".oldpage.view.activity.ShopPageActivity"
            android:exported="true"
            android:label="@string/shop_info_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_shop_page"/>

            </intent-filter>
        </activity>

        <activity android:name=".oldpage.view.activity.ShopWebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:label="@string/app_name"/>

        <activity
            android:name=".address.view.activity.ShopAddressListActivity"
            android:exported="true"
            android:label="@string/shop_info_label_physical_shop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".note.view.activity.ShopNoteDetailActivity"
            android:exported="true"
            android:label="@string/note_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".product.view.activity.ShopProductListActivity"
            android:exported="true"
            android:label="@string/shop_product_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".sort.view.activity.ShopProductSortActivity"
            android:exported="true"
            android:label="@string/shop_sort_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".favourite.view.activity.ShopFavouriteListActivity"
            android:exported="true"
            android:label="@string/favorited_shop_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity android:name=".product.view.activity.SimpleWebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:label="@string/app_name"/>

        <activity android:name=".search.view.activity.ShopSearchProductActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:label="@string/shop_search_product"/>
    </application>
</manifest>