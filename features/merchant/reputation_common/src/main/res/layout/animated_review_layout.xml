<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animated_review"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/review_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_anim_star_yellow"
            tools:src="@drawable/ic_stars_disable_xxl" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="false"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_anim_star_yellow"
            tools:src="@drawable/ic_stars_disable_xxl" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="false"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_anim_star_yellow"
            tools:src="@drawable/ic_stars_disable_xxl" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="false"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_anim_star_yellow"
            tools:src="@drawable/ic_stars_disable_xxl" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_star_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="false"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_anim_star_yellow"
            tools:src="@drawable/ic_stars_disable_xxl" />
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_review_status"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:typographyType="heading_5"
        android:visibility="gone"
        tools:text="Memuaskan"/>
</LinearLayout>