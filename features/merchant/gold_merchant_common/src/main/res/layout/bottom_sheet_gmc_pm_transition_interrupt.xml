<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/unify_space_12"
    android:paddingEnd="@dimen/unify_space_12">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineGmcStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/spacing_lvl2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineGmcEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/spacing_lvl2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSahPmTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:layout_constraintEnd_toStartOf="@+id/guidelineGmcEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineGmcStart"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        tools:text="@string/gmc_power_merchant_bottom_sheet_title" />

    <com.tokopedia.gm.common.widget.ShopLevelView
        android:id="@+id/slvSahPmShopLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:layout_constraintStart_toStartOf="@+id/guidelineGmcStart"
        app:layout_constraintTop_toBottomOf="@+id/tvSahPmTitle" />

    <View
        android:id="@+id/verViewGmc"
        android:layout_width="1dp"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:background="@color/Unify_N75"
        app:layout_constraintBottom_toBottomOf="@+id/slvSahPmShopLevel"
        app:layout_constraintStart_toEndOf="@+id/slvSahPmShopLevel"
        app:layout_constraintTop_toTopOf="@+id/slvSahPmShopLevel" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSahPmLabelShopScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:text="@string/sah_label_core"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/tvSahPmShopScore"
        app:layout_constraintStart_toStartOf="@+id/verViewGmc"
        app:layout_constraintTop_toTopOf="@+id/slvSahPmShopLevel"
        app:typographyType="body_1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSahPmShopScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700"
        app:layout_constraintStart_toEndOf="@+id/tvSahPmLabelShopScore"
        app:layout_constraintTop_toTopOf="@+id/slvSahPmShopLevel"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        tools:text="70" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSahPmLabelShopScoreMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text="@string/sah_max_shop_score"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/tvSahPmShopScore"
        app:layout_constraintStart_toEndOf="@+id/tvSahPmShopScore"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <com.tokopedia.gm.common.widget.PowerMerchantGradeView
        android:id="@+id/pmgSahPmCard"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slvSahPmShopLevel" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnGmcCheckShopPerformance"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:layout_marginBottom="@dimen/unify_space_12"
        android:gravity="center"
        android:text="@string/gmc_check_your_shop_performance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineGmcEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineGmcStart"
        app:layout_constraintTop_toBottomOf="@+id/pmgSahPmCard" />
</androidx.constraintlayout.widget.ConstraintLayout>