<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20"
    android:gravity="center_horizontal"
    android:layout_marginBottom="@dimen/dp_10">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Yaah, Fitur [Fitur] hanya dapat diakses Power Merchant aktif"
        android:textColor="@color/Unify_N700"
        app:fontSize="subHeadline"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_16"
        />

    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/image_view_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_200"
        app:srcCompat="@drawable/bg_all_promo"
        android:layout_marginBottom="@dimen/dp_20"
        />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/text_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Skor performa tokomu kurang dari 65 poin. Segera tingkatkan performa toko untuk menggunakan [Fitur] dan fitur eksklusif Power Merchant lainnya kembali."
        android:gravity="center"
        app:fontSize="micro"
        android:layout_marginBottom="@dimen/dp_20"/>

    <Button
        android:id="@+id/button_redirect_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Button.Submit.Green.Full"
        tools:text="Button Text"/>

</LinearLayout>