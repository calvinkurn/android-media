<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvEndGameInterrupt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        tools:text="Sejak 30 Agustus, masa transisi skema performa toko baru sudah berakhir" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardEndGameInterrupt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/tvEndGameInterrupt">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bg_container_pm_status"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bg_warning_card_end_game"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconCardEndGame"
                android:layout_width="@dimen/gmc_dimen_49dp"
                android:layout_height="@dimen/gmc_dimen_49dp"
                app:layout_constraintTop_toTopOf="@id/tvTitleCardEndGame"
                app:layout_constraintBottom_toBottomOf="@id/tvDescCardEndGame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvTitleCardEndGame"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvTitleCardEndGame"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="heading_5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconCardEndGame"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/title_card_pm_end_game_bottom_sheet"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvDescCardEndGame"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:layout_marginBottom="@dimen/spacing_lvl4"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3"
                app:layout_constraintTop_toBottomOf="@id/tvTitleCardEndGame"
                app:layout_constraintStart_toEndOf="@id/iconCardEndGame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="@string/desc_card_pm_end_game_bottom_sheet"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</androidx.constraintlayout.widget.ConstraintLayout>