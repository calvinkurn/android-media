<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvEndGameInterrupt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        android:text="@string/title_end_game_period_information_interrupt" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEndGameInterrupt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        app:cardCornerRadius="@dimen/spacing_lvl3"
        app:cardElevation="@dimen/layout_lvl0"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEndGameInterrupt">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/bg_container_pm_status"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="@dimen/layout_lvl0"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_warning_card_end_game" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconCardEndGame"
                android:layout_width="@dimen/gmc_dimen_49dp"
                android:layout_height="@dimen/gmc_dimen_49dp"
                android:layout_marginStart="@dimen/spacing_lvl4"
                app:layout_constraintBottom_toBottomOf="@id/tvDescCardEndGame"
                app:layout_constraintEnd_toStartOf="@id/tvTitleCardEndGame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvTitleCardEndGame"
                app:srcCompat="@drawable/ic_risk_inactive" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvTitleCardEndGame"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconCardEndGame"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_5"
                tools:text="@string/title_card_pm_end_game_bottom_sheet" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvDescCardEndGame"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:layout_marginBottom="@dimen/spacing_lvl4"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconCardEndGame"
                app:layout_constraintTop_toBottomOf="@id/tvTitleCardEndGame"
                app:typographyType="body_3"
                tools:text="@string/desc_card_pm_end_game_bottom_sheet" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvStatusEndGameInterrupt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardEndGameInterrupt"
        app:typographyType="body_3"
        android:text="@string/status_end_game_period_information_interrupt" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnCheckShopPerformance"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:text="@string/gmc_check_your_shop_performance"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStatusEndGameInterrupt"/>

</androidx.constraintlayout.widget.ConstraintLayout>