<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/unify_space_12"
    android:paddingEnd="@dimen/unify_space_12">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineGmcStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/spacing_lvl2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineGmcEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/spacing_lvl2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvGmcPmFinalTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guidelineGmcEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineGmcStart"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        tools:text="@string/gmc_power_merchant_bottom_sheet_title" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardGmcPotentialGrade"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGmcPmFinalTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardContainerGmcPotentialGrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/unify_space_12"
            android:paddingEnd="@dimen/unify_space_12"
            tools:background="@drawable/bg_gmc_pm_final_card">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/imgGmcSingleImage"
                android:layout_width="@dimen/gmc_dimen_44dp"
                android:layout_height="@dimen/gmc_dimen_44dp"
                android:layout_marginTop="@dimen/layout_lvl2"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/imgGmcCurrentPmBadge"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                android:layout_marginTop="@dimen/gmc_dimen_30dp"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/imgGmcFinalArrow"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars"
                tools:visibility="visible" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/imgGmcFinalArrow"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                android:rotation="180"
                android:visibility="invisible"
                app:icon_color_light_enable="@color/Unify_G500"
                app:icon_enable_state="true"
                app:icon_name="ARROW_BACK"
                app:layout_constraintBottom_toBottomOf="@+id/imgGmcCurrentPmBadge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgGmcCurrentPmBadge"
                tools:visibility="visible" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/imgGmcPotentialPmBadge"
                android:layout_width="@dimen/layout_lvl3"
                android:layout_height="@dimen/layout_lvl3"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/imgGmcCurrentPmBadge"
                app:layout_constraintStart_toEndOf="@+id/imgGmcFinalArrow"
                app:layout_constraintTop_toTopOf="@+id/imgGmcCurrentPmBadge"
                tools:src="@tools:sample/avatars"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvGcmFinalCardTitle"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl3"
                android:gravity="center_horizontal"
                android:textColor="@color/Unify_N700"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgGmcCurrentPmBadge"
                app:typographyType="heading_4"
                tools:text="Tokomu berpotensi jadi Power Merchant Gold!" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvGcmFinalCardDescription"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl1"
                android:layout_marginBottom="@dimen/unify_space_12"
                android:gravity="center_horizontal"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvGcmFinalCardTitle"
                tools:text="Dengan Power Merchant Gold, tokomu punya banyak keuntungan baru dari fitur Tokopedia, lho!" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvGmcFinalInterruptDescription"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:gravity="center_horizontal"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintEnd_toStartOf="@+id/guidelineGmcEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineGmcStart"
        app:layout_constraintTop_toBottomOf="@+id/cardGmcPotentialGrade"
        tools:text="Grade Power Merchant akan efektif menggantikan Reputasi. Status Power Merchant dengan skor di bawah 60 juga akan otomatis dinonaktifkan, ya." />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnGmcFinalShopScore"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:layout_marginBottom="@dimen/unify_space_12"
        android:gravity="center"
        android:text="@string/gmc_check_your_shop_performance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineGmcEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineGmcStart"
        app:layout_constraintTop_toBottomOf="@+id/tvGmcFinalInterruptDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>