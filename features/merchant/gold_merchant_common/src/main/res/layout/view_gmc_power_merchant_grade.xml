<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerCardPm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_lvl0"
            android:paddingTop="@dimen/layout_lvl1"
            android:paddingEnd="@dimen/layout_lvl1"
            android:paddingBottom="@dimen/layout_lvl1"
            tools:background="@drawable/bg_gmc_power_merchant_card">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/imgSahPmGrade"
                android:layout_width="@dimen/gmc_dimen_54dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVerSabPmGrade1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unify_image_placeholder="@android:color/transparent"
                tools:visibility="visible" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/icSahPmReputationBadge"
                android:layout_width="@dimen/gmc_dimen_28dp"
                android:layout_height="@dimen/gmc_dimen_28dp"
                android:layout_marginEnd="@dimen/spacing_lvl2"
                android:visibility="gone"
                android:contentDescription="@null"
                app:layout_constraintBottom_toBottomOf="@+id/imgSahPMPotentialGradeArrow"
                app:layout_constraintEnd_toStartOf="@+id/imgSahPMPotentialGradeArrow"
                app:layout_constraintTop_toTopOf="@+id/imgSahPMPotentialGradeArrow"
                tools:src="@tools:sample/avatars"
                tools:visibility="visible" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/imgSahPMPotentialGradeArrow"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="@dimen/layout_lvl2"
                android:rotation="180"
                android:visibility="gone"
                app:icon_color_light_enable="@color/Unify_G500"
                app:icon_enable_state="true"
                app:icon_name="ARROW_BACK"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/guidelineVerSabPmGrade1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/icSahPmGradeBadge"
                android:layout_width="@dimen/gmc_dimen_28dp"
                android:layout_height="@dimen/gmc_dimen_28dp"
                android:layout_marginStart="@dimen/spacing_lvl2"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imgSahPMPotentialGradeArrow"
                app:layout_constraintStart_toEndOf="@+id/imgSahPMPotentialGradeArrow"
                app:layout_constraintTop_toTopOf="@+id/imgSahPMPotentialGradeArrow"
                tools:src="@tools:sample/avatars"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineVerSabPmGrade1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="98dp" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvSahPmGradeTitle"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineVerSabPmGrade1"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                tools:text="@string/gmc_pm_grade_title" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvSahPmGradeDescription"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl1"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guidelineVerSabPmGrade1"
                app:layout_constraintTop_toBottomOf="@+id/tvSahPmGradeTitle"
                app:typographyType="body_3"
                tools:text="Grade ini dikonversi dari badge Reputasimu. Pertahankan Performa untuk tetap di grade ini, ya!" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>
</RelativeLayout>