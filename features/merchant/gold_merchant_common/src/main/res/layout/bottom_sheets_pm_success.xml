<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20"
    android:gravity="center_horizontal"
    android:layout_marginBottom="@dimen/dp_10">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_success_header_bs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pm_label_bs_success_header"
        android:textColor="@color/black"
        app:fontSize="subHeadline"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_16"
        />
    
    <ImageView
        android:id="@+id/img_btm_sheets"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:src="@drawable/bg_all_promo"
        android:layout_marginBottom="@dimen/dp_20"
        />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_success_desc_bs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pm_label_bs_success_desc"
        android:gravity="center"
        app:fontSize="title"
        android:layout_marginBottom="@dimen/dp_20"/>

    <Button
        android:id="@+id/button_checknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Button.Submit.Green.Full"
        android:layout_marginBottom="@dimen/dp_64"
        android:text="@string/pm_label_bs_success_button"/>

</LinearLayout>