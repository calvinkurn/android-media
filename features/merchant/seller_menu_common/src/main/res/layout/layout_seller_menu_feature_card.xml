<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardStatistics"
    android:layout_width="match_parent"
    android:layout_height="@dimen/seller_menu_business_card_height"
    android:layout_marginTop="@dimen/spacing_lvl4"
    android:paddingLeft="@dimen/spacing_lvl3"
    android:paddingRight="@dimen/spacing_lvl3">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageFeature"
        android:layout_width="@dimen/seller_menu_feature_icon_size"
        android:layout_height="@dimen/seller_menu_feature_icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:drawablePadding="@dimen/spacing_lvl3"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="@id/imageFeature"
        app:layout_constraintLeft_toRightOf="@id/imageFeature"
        app:layout_constraintTop_toTopOf="@id/imageFeature"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="statistik toko" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:textColor="@color/light_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:typographyType="body_3"
        tools:text="Cek perkembangan statistik produk dan toko agar jadi lebih kompetitif." />
</androidx.constraintlayout.widget.ConstraintLayout>