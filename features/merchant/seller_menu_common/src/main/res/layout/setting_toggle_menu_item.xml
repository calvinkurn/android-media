<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_menu_list_height"
    android:background="?attr/selectableItemBackground">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/settingToggleMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_NN950_96"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        tools:text="Setting gan setting gan" />

    <com.tokopedia.unifycomponents.NotificationUnify
        android:id="@+id/settingToggleMenuTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/settingToggleMenuTitle"
        tools:text="BETA" />

    <com.tokopedia.unifycomponents.selectioncontrol.SwitchUnify
        android:id="@+id/settingToggleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/sah_dimen_20dp"
        app:notificationColor="color_primary"
        app:notificationType="counter_type" />
</RelativeLayout>