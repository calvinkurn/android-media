<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/setting_status_padding_top"
    android:paddingBottom="@dimen/setting_status_padding_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="@dimen/setting_card_height"
        android:background="@drawable/bg_other_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.925">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/titleShopStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/regular_merchant"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/leftGuideline"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/regularMerchantStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/setting_verifikasi"
            android:textColor="@color/Unify_G500"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
