<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_balance_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmeringBalanceTitle"
        android:layout_width="96dp"
        android:layout_height="@dimen/setting_zero_dp"
        android:gravity="center_vertical"
        app:loader_corner_radius="@dimen/setting_shimmer_radius"
        app:loader_type="line"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmeringBalanceValue"
        android:layout_width="128dp"
        android:layout_height="@dimen/setting_zero_dp"
        android:gravity="center_vertical"
        app:loader_corner_radius="@dimen/setting_shimmer_radius"
        app:loader_type="line"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>