<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="7dp"
    android:paddingBottom="8dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/settingTitleIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/settingTitleText"
        app:layout_constraintWidth_percent="0.15"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/settingTitleText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/default_black_text"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        app:layout_constraintStart_toEndOf="@id/settingTitleIcon"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Pengatiran Toko"/>

</androidx.constraintlayout.widget.ConstraintLayout>