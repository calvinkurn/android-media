<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_balance_height"
        android:paddingTop="@dimen/setting_balance_padding"
        android:background="?attr/selectableItemBackground"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/balanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
            tools:text="Saldo"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/balanceValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintWidth_percent="0.5"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
            tools:text="Rp123.456.789"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_shc_balance_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="icon_shc_balance_failed, tv_shc_balance_failed"
            tools:visibility="gone"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/icon_shc_balance_failed"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginVertical="@dimen/layout_lvl1"
            app:icon_name="RELOAD"
            app:layout_constraintEnd_toStartOf="@id/tv_shc_balance_failed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shc_balance_failed"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="@string/setting_other_failed_to_load"
            android:textColor="@color/Unify_N700_96"
            android:visibility="gone"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmeringBalanceValue"
            android:layout_width="@dimen/setting_zero_dp"
            android:layout_height="@dimen/setting_zero_dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:corners="@integer/setting_shimmer_radius"
            app:layout_constraintWidth_percent="0.38"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
            tools:visibility="visible"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVerticalLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVerticalRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
