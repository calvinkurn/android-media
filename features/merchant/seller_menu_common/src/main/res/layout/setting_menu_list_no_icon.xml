<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_menu_list_no_icon_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">
        <View
            android:id="@+id/settingMenuIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settingMenuTitle"
            app:layout_constraintWidth_percent="0.15"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/settingMenuTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/default_black_text"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            app:layout_constraintStart_toEndOf="@id/settingMenuIcon"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
