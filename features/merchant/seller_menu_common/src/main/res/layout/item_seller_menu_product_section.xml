<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginRight="@dimen/spacing_lvl4"
    android:layout_marginBottom="@dimen/spacing_lvl3">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/labelProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seller_menu_product_list"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelProduct"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="3 Produk" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageChevronRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/textProductCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/labelProduct"
        tools:src="@drawable/ic_seller_menu_chevron_right" />
</androidx.constraintlayout.widget.ConstraintLayout>