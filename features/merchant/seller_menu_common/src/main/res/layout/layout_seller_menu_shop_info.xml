<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/spacing_lvl4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/successShopInfoLayout"
        layout="@layout/layout_seller_menu_shop_info_success"/>

    <LinearLayout
        android:id="@+id/shopStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_divider_thin"
        android:background="@color/Unify_N0"/>

    <include
        layout="@layout/setting_partial_others_local_load"/>

    <include
        android:id="@+id/saldoBalance"
        layout="@layout/setting_balance"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_divider_thick"/>

</LinearLayout>