<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/variantImgContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:background="@drawable/bg_variant_img_unselected">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.variant_common.view.customview.ProductRoundedImageView
            android:id="@+id/variantImg"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            app:borderRadius="@dimen/dp_6"
            tools:src="@tools:sample/avatars" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/overlayVariantImgContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_round_corner_variant_overlay"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/variant_empty"
            android:textColor="@color/white"
            app:typographyType="body_3" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>