<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/variantImgContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginRight="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/imgContainerVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_variant_img_unselected"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.product.detail.common.data.views.ProductRoundedImageView
                android:id="@+id/variantImg"
                android:layout_width="@dimen/pdp_variant_image"
                android:layout_height="@dimen/pdp_variant_image"
                app:borderRadius="6dp"
                tools:src="@tools:sample/avatars" />

        </FrameLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/overlayVariantImgContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bg_round_corner_variant_overlay"
            android:text="@string/variant_empty"
            android:textColor="@color/Unify_N0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            tools:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.NotificationUnify
        android:id="@+id/promoVariantImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:notificationColor="color_text_type"
        app:notificationTitle="@string/variant_promo"
        app:notificationType="text_type" />

</androidx.constraintlayout.widget.ConstraintLayout>