            <intent-filter >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_shop_settings_etalase"/>
            </intent-filter >
        </activity>

        <activity
            android:name=".notes.view.activity.ShopSettingsNotesActivity"
            android:label="@string/shop_settings_manage_notes"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_shop_settings_notes"/>
            </intent-filter>
        </activity>

        <activity android:name=".address.view.ShopSettingAddressAddEditActivity"
            android:label="@string/shop_settings_add_address"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait"/>

        <activity android:name=".notes.view.activity.ShopSettingNotesAddEditActivity"
            android:label="@string/shop_settings_add_note"
