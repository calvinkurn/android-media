<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.shop.settings">

    <application>
        <activity
            android:name=".basicinfo.view.activity.ShopSettingsInfoActivity"
            android:label="@string/shop_settings_info"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_shop_settings_info"/>
            </intent-filter>
        </activity>

        <activity
