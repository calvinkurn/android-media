<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.tokopedia.shop.settings">

    <application>
        <activity
            android:name=".basicinfo.view.activity.ShopSettingsInfoActivity"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_shop_settings_info"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".basicinfo.view.activity.ShopEditScheduleActivity"
            android:label="@string/shop_settings_shop_status"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_shop_edit_schedule"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".basicinfo.oldview.activity.OldShopEditBasicInfoActivity"
            android:label="@string/shop_settings_basic_info"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />

        <activity
            android:name=".basicinfo.oldview.activity.OldShopSettingsInfoActivity"
            android:label="@string/shop_settings_manage_shop_info"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />

        <activity
            android:name=".basicinfo.oldview.activity.OldShopEditScheduleActivity"
            android:label="@string/shop_settings_shop_status"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name=".address.view.ShopSettingsAddressActivity"
            android:label="@string/shop_settings_manage_address"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
