<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_3"
    app:cardPreventCornerOverlap="false"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardBackgroundColor="@color/cardview_light_background">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:orientation="vertical">

        <TextView style="@style/TextView.Small.BlackSecondary"
            android:id="@+id/title"
            android:lineSpacingExtra="@dimen/sp_8"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_32"
            tools:text="MyShop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/menu_more"
            app:layout_constraintEnd_toStartOf="@+id/menu_more"/>

        <ImageView
            android:id="@+id/menu_more"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_shop_settings_more_vert_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView style="@style/TextView.Micro.BlackDisabled"
            android:id="@+id/address_line_1"
            android:layout_width="0dp"
            android:lineSpacingExtra="@dimen/sp_6"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="Jl. Prof. DR. Satrio No.Kav 11, RT.3/RW.3, Karet Semanggi, Setia Budi"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintRight_toRightOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"/>

        <TextView style="@style/TextView.Micro.BlackDisabled"
            android:id="@+id/address_line_2"
            android:layout_width="0dp"
            android:lineSpacingExtra="@dimen/sp_6"
            android:layout_marginTop="@dimen/dp_2"
            tools:text="Setiabudi, Jakarta Selatan, DKI Jakarta, Indonesia 12345"
            app:layout_constraintTop_toBottomOf="@+id/address_line_1"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintRight_toRightOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"/>

        <View
            android:id="@+id/separator_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/bg_line_separator"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@+id/address_line_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            app:lv_image_width="@dimen/dp_20"
            app:lv_image="@drawable/ic_shop_icon_phone"
            app:lv_image_margin_right="@dimen/dp_16"
            app:lv_title="@string/app_name"
            app:lv_content_text_size="@dimen/sp_13"
            app:lv_title_color="@color/font_black_disabled_38"
            app:layout_constraintTop_toBottomOf="@+id/separator_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/separator_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/bg_line_separator"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@+id/phone_number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            app:lv_image_width="@dimen/dp_20"
            app:lv_image="@drawable/ic_shop_setting_email"
            app:lv_image_margin_right="@dimen/dp_16"
            app:lv_title="@string/app_name"
            app:lv_content_text_size="@dimen/sp_13"
            app:lv_title_color="@color/font_black_disabled_38"
            app:layout_constraintTop_toBottomOf="@+id/separator_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/separator_3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/bg_line_separator"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/fax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_4"
            app:lv_image_width="@dimen/dp_20"
            app:lv_image="@drawable/ic_shop_setting_fax"
            app:lv_image_margin_right="@dimen/dp_16"
            app:lv_title="@string/app_name"
            app:lv_content_text_size="@dimen/sp_13"
            app:lv_title_color="@color/font_black_disabled_38"
            app:layout_constraintTop_toBottomOf="@+id/separator_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>