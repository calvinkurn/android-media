<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_16"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16">
            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvNoteName"
                app:typographyType="body_1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/dp_32"
                tools:text="Waktu Pengiriman"
                app:typographyWeight="reguler"
                android:singleLine="true"
                android:ellipsize="end"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvLastUpdate"
                android:textColor="@color/font_black_disabled_38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_2"
                app:typographyType="body_1"
                app:typographyWeight="reguler"
                tools:text="22 Juni 2018, pukul 14:04" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivMenuMore"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_16"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_three_dots_more_menu"
            android:contentDescription="@string/settings_of_the_item"/>
    </LinearLayout>

</LinearLayout>