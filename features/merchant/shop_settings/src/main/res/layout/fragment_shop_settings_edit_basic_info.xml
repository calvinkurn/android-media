<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <TextView
            style="@style/TextView.Title.BlackSecondary"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/shop_image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:visibility="visible">

            <FrameLayout
                android:id="@+id/vgLogoContainer"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                android:background="@drawable/rect_white_rounded_stroke_gray_padding">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_camera_add"
                    android:scaleType="centerCrop"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_balloon_gray"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextView.Micro.BlackDisabled"
                        android:text="@string/shop_settings_max_file_size"
                        android:textStyle="bold" />
                    <TextView
                        style="@style/TextView.Micro.BlackDisabled"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text="@string/shop_settings_image_size" />

                    <TextView
                        style="@style/TextView.Micro.BlackDisabled"
                        android:text="@string/shop_settings_info_allowed_file"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/TextView.Micro.BlackDisabled"
                        android:text="@string/shop_settings_info_type_file_image" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvBrowseFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_browse_file"
                    android:padding="@dimen/dp_6"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center"
                    android:background="@drawable/rect_white_stroke_gray"/>
            </LinearLayout>


        </LinearLayout>

        <com.tokopedia.design.text.TkpdHintTextInputLayout
            android:id="@+id/tilShopSlogan"
            style="@style/HintTextInputLayout"
            android:layout_marginTop="@dimen/dp_16"
            android:hint="@string/shop_slogan_label"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/max_slogan_char"
            app:helperEnabled="true">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etShopSlogan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions|textMultiLine"
                android:maxLength="@integer/max_slogan_char" />

        </com.tokopedia.design.text.TkpdHintTextInputLayout>

        <com.tokopedia.design.text.TkpdHintTextInputLayout
            android:id="@+id/tilShopDesc"
            style="@style/HintTextInputLayout"
            android:layout_marginTop="@dimen/dp_16"
            android:hint="@string/shop_description_label"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/max_shop_desc_char"
            app:helperEnabled="true">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etShopDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions|textMultiLine"
                android:maxLength="@integer/max_shop_desc_char" />
            â€‹
        </com.tokopedia.design.text.TkpdHintTextInputLayout>
    </LinearLayout>
</ScrollView>

