<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vgShopStatusContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_16">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_information"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:lineSpacingExtra="3sp"
                android:text="@string/shop_status_label" />

            <TextView
                android:id="@+id/tvShopStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_2"
                android:lineSpacingExtra="4sp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/title_subinformation"
                tools:text="Buka" />

            <View
                android:background="@color/line_separator"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="@dimen/dp_1"
                android:layout_width="fill_parent">
            </View>

        </LinearLayout>

        <ImageView
            app:srcCompat="@drawable/ic_arrow_head_right"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginRight="22dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>




