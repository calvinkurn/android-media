<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/partial_toolbar_save_button" />

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_24">

            <TextView
                style="@style/TextView.Micro.BlackSecondary"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/shop_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:visibility="visible">

                <FrameLayout
                    android:id="@+id/vgLogoContainer"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:background="@drawable/rect_white_rounded_stroke_gray_padding">

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_camera_add"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/parentTvBrowseFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_8">

                        <TextView
                            style="@style/TextView.Micro.BlackDisabled"
                            android:text="@string/shop_settings_max_file_size"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextView.Micro.BlackDisabled"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:text="@string/shop_settings_image_size" />

                        <TextView
                            style="@style/TextView.Micro.BlackDisabled"
                            android:text="@string/shop_settings_info_allowed_file"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/TextView.Micro.BlackDisabled"
                            android:text="@string/shop_settings_info_type_file_image" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBrowseFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/rect_white_stroke_gray"
                        android:gravity="center"
                        android:padding="@dimen/dp_6"
                        android:text="@string/label_browse_file" />
                </LinearLayout>
            </LinearLayout>

            <com.tokopedia.unifycomponents.ticker.Ticker
                android:id="@+id/shopEditTicker"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginTop="@dimen/dp_12"
                app:descriptionText="@string/ticker_warning_can_only_change_shopname_once"
                app:layout_constraintTop_toTopOf="parent"
                app:tckv_content_text_size="@dimen/dp_12"
                app:tickerType="warning"
                android:visibility="gone" />

            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/shopNameTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl4"
                app:text_field_counter="60"
                app:text_field_input_type="text"
                app:text_field_label="Nama Toko" />

            <com.tokopedia.unifycomponents.TextFieldUnify
                android:id="@+id/shopDomainTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl5"
                app:text_field_counter="24"
                app:text_field_input_type="text"
                app:text_field_label="Domain Toko"
                app:text_field_prepend_text="www.tokopedia.com/" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_shop_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:lines="1"
                android:text="Coba rekomendasi ini"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/sp_12"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_shop_recom_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:lines="1"
                android:text="www.tokopedia.com/toko_1"
                android:textColor="@color/green_500"
                android:textSize="@dimen/sp_12"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/label_shop_recom_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:lines="1"
                android:text="www.tokopedia.com/toko_2"
                android:textColor="@color/green_500"
                android:textSize="@dimen/sp_12"
                app:typographyType="body_3" />


            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/tilShopSlogan"
                style="@style/HintTextInputLayout"
                android:layout_marginTop="@dimen/dp_30"
                android:hint="@string/shop_slogan_label"
                app:counterEnabled="true"
                app:counterMaxLength="@integer/max_slogan_char">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etShopSlogan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/shop_slogan_hint"
                    android:inputType="textNoSuggestions|textMultiLine"
                    android:maxLength="@integer/max_slogan_char" />

            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/tilShopDesc"
                style="@style/HintTextInputLayout"
                android:layout_marginTop="@dimen/dp_16"
                android:hint="@string/shop_description_label"
                app:counterEnabled="true"
                app:counterMaxLength="@integer/max_shop_desc_char">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etShopDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/shop_desc_hint"
                    android:inputType="textNoSuggestions|textMultiLine"
                    android:maxLength="@integer/max_shop_desc_char" />
            </com.tokopedia.design.text.TkpdHintTextInputLayout>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>
</LinearLayout>