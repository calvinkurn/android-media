<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:id="@+id/scrollView"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/text_input_name"
            app:text_field_label_static="true"
            app:text_field_label="@string/shop_address_label_name"
            app:text_field_placeholder="@string/shop_address_name_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/text_input_address"
            app:text_field_label_static="true"
            app:text_field_label="@string/shop_address_label_address"
            app:text_field_input_type="text"
            app:text_field_placeholder="@string/shop_address_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/text_input_district"
            app:text_field_label_static="true"
            app:text_field_label="@string/shop_address_label_district"
            app:text_field_placeholder="@string/shop_address_district_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/text_input_postal_code"
            app:text_field_label_static="true"
            app:text_field_label="@string/shop_address_label_postal_code"
            app:text_field_placeholder="@string/shop_address_postal_code_placeholder"
            android:layout_width="match_parent"
            app:text_field_input_type="phone"
            android:layout_height="wrap_content"/>

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/text_input_phone"
            app:text_field_label_static="true"
            app:text_field_label="@string/shop_address_label_phone"
            app:text_field_placeholder="@string/shop_address_phone_placeholder"
            android:layout_width="match_parent"
            app:text_field_input_type="phone"
            android:layout_height="wrap_content"/>

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/text_input_email"
            app:text_field_label_static="true"
            app:text_field_label="@string/shop_address_label_email"
            app:text_field_placeholder="@string/shop_address_email_placeholder"
            android:layout_width="match_parent"
            app:text_field_input_type="textEmailAddress"
            android:layout_height="wrap_content"/>

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/text_input_fax"
            app:text_field_label_static="true"
            app:text_field_label="@string/shop_address_label_fax"
            app:text_field_placeholder="@string/shop_address_fax_placeholder"
            android:layout_width="match_parent"
            app:text_field_input_type="phone"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>