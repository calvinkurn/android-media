<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/vgShopInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                style="@style/TextView.Title.Bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:text="@string/shop_settings_basic_info"
                 />

            <TextView
                style="@style/TextView.Title.Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_20"
                android:text="@string/label_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivShopLogo"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                tools:srcCompat="@drawable/ic_shop_default_empty" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvShopName"
                    style="@style/TextView.Title"
                    android:textColor="@android:color/black"
                    tools:text="Toko Kelontong Indonesia" />

                <TextView
                    android:id="@+id/tvShopDomain"
                    style="@style/TextView.Micro.BlackSecondary"
                    tools:text="www.tokopedia.com/tokokelontong" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvShopSloganTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_information"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="@string/shop_slogan_label" />

        <TextView
            android:id="@+id/tvShopSlogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title_subinformation"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            tools:text="Test 123" />

        <TextView
            android:id="@+id/tvShopDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_information"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="@string/shop_description_label" />

        <TextView
            android:id="@+id/tvShopDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title_subinformation"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            tools:text="Toko saya bagus banget, menjual kebutuhan Anda dari rumah, kantor, hingga entertainment" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_cancel_order_canceled"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:text="@string/text_ubah_button"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            app:unifyButtonVariant="ghost"
            app:unifyButtonType="alternate"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>