<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.tokopedia.design.label.LabelView
        android:id="@+id/lvShopBasicInfo"
        style="@style/LabelLayout"
        app:lv_content="@string/label_change"
        app:lv_content_color="@color/tkpd_main_green"
        app:lv_title="@string/shop_settings_basic_info"
        app:lv_title_text_style="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/shopImageView"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            app:srcCompat="@drawable/ic_default_shop_ava" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvShopName"
                style="@style/TextView.Title"
                android:textColor="@android:color/black"
                tools:text="Toko Kelontong Indonesia" />

            <TextView
                android:id="@+id/tvShopDomain"
                style="@style/TextView.Micro.BlackSecondary"
                tools:text="www.tokopedia.com/tokokelontong" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:text="@string/shop_slogan_label" />

    <TextView
        android:id="@+id/tvShopSlogan"
        style="@style/TextView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        tools:text="Test 123" />

    <TextView
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:text="@string/shop_description_label" />

    <TextView
        android:id="@+id/tvShopDescription"
        style="@style/TextView.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        tools:text="Toko saya bagus banget, menjual kebutuhan Anda dari rumah, kantor, hingga entertainment" />

</LinearLayout>