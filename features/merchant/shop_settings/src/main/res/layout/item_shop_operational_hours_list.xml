<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:paddingTop="@dimen/dp_16">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ops_hour_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        tools:text="Senin"
        android:layout_marginStart="@dimen/dp_18"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ops_hour_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyWeight="reguler"
        app:typographyType="body_2"
        android:layout_marginEnd="@dimen/dp_18"
        tools:text="09:00 - 17:00 WIB"
        />

    <View
        android:id="@+id/item_separator_ops_hour"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/ops_hour_day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/Unify_N75"
        />

</androidx.constraintlayout.widget.ConstraintLayout>