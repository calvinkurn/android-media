<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:paddingTop="14dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ops_hour_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        tools:text="Senin"
        android:layout_marginStart="14dp"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ops_hour_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyWeight="reguler"
        app:typographyType="body_2"
        android:layout_marginEnd="14dp"
        tools:text="Libur rutin"
        android:textColor="@color/Unify_NN950"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/ops_hour_time_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ops_hour_time"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:textColor="@color/Unify_NN600"
        android:layout_marginEnd="14dp"
        tools:text="Produkmu bisa dibeli"
        />

    <View
        android:id="@+id/item_separator_ops_hour"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/ops_hour_time_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:background="@color/Unify_N75"
        />

</androidx.constraintlayout.widget.ConstraintLayout>