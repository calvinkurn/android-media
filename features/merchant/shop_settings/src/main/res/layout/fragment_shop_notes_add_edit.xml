<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/text_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextDarkMode"
            app:counterEnabled="true"
            app:text_field_counter="@integer/shop_note_title_max_counter"
            app:text_field_input_type="text"
            app:text_field_label="@string/shop_note_label_title" />

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/text_input_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:theme="@style/TextDarkMode"
            app:counterEnabled="true"
            app:text_field_counter="@integer/shop_note_content_max_counter"
            app:text_field_input_type="text"
            app:text_field_label="@string/shop_note_label_desc" />

    </LinearLayout>

</ScrollView>