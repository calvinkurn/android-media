<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_information_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="paragraph_3"
        tools:text="Atur Diskon Tiap Lokasi" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_information_location_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintLeft_toLeftOf="@id/text_information_location_title"
        app:layout_constraintTop_toBottomOf="@id/text_information_location_title"
        app:typographyType="small"
        tools:text="Pilih lokasi dulu sebelum Atur Diskon, ya." />

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@id/text_information_location_sub_title"
        android:tint="@color/Unify_NN900"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconunify_chevron_right" />

</androidx.constraintlayout.widget.ConstraintLayout>