<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="8dp"
    tools:ignore="RtlSymmetry">

    <com.tokopedia.product_ar.util.ImageRoundedBorderSelectionView
        android:id="@+id/img_item_variant_ar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:borderRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_variant_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@+id/img_item_variant_ar"
        app:layout_constraintStart_toStartOf="@+id/img_item_variant_ar"
        app:layout_constraintTop_toBottomOf="@+id/img_item_variant_ar"
        app:typographyType="small"
        tools:text="Normal" />

</androidx.constraintlayout.widget.ConstraintLayout>