<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="17dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_to_open_auto_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gmsubscribe_background_card_without_corner"
        android:padding="18dp">

        <CheckBox
            android:id="@+id/check_box_to_open_auto_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/open_auto_subscribe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/check_box_to_open_auto_subscribe"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toRightOf="@+id/check_box_to_open_auto_subscribe"
            android:text="@string/gmsubscribe_auto_subscribe_title"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/open_auto_subscribe_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/open_auto_subscribe_title"
            android:layout_below="@id/open_auto_subscribe_title"
            tools:text="@string/gmsubscribe_auto_subscribe_subtitle"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/gm_subscribe_auto_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gmsubscribe_background_card_without_corner"
        android:orientation="horizontal"
        android:padding="17dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:text="@string/gmsubscribe_auto_package_title"
                style="@style/TextView.Micro.BlackSecondary" />

            <TextView
                android:id="@+id/text_view_current_auto_package_title"
                android:layout_marginBottom="5dp"
                style="@style/TextView.Small.BlackSecondary"/>

            <TextView
                style="@style/TextView.Micro.BlackSecondary"
                android:text="@string/gmsubscribe_auto_package_price"/>

            <TextView
                android:id="@+id/text_view_current_auto_package_price"
                android:layout_marginBottom="5dp"
                style="@style/TextView.Small.BlackSecondary"/>

            <TextView
                style="@style/TextView.Micro.BlackSecondary"
                android:text="@string/gmsubscribe_auto_package_next_subscribe"/>

            <TextView
                android:id="@+id/text_view_current_auto_package_next_subscribe"
                android:layout_marginBottom="5dp"
                style="@style/TextView.Small.BlackSecondary"/>

            <TextView
                android:text="@string/gmsubscribe_auto_package_payment_method"
                style="@style/TextView.Micro.BlackSecondary"/>

            <TextView
                android:id="@+id/text_view_current_auto_package_payment_method"
                android:layout_marginBottom="5dp"
                style="@style/TextView.Small.BlackSecondary"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/icon_change_gm_subscribe_auto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:srcCompat="@drawable/ic_edit_pencil_green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/gmsubscribe_change_auto"
                android:textColor="@color/tkpd_main_green"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>