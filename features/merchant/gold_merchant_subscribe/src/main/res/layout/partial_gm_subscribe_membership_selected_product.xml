<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.tokopedia.gm.resource.GMImageView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="12dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <com.tokopedia.gm.resource.GMTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextView.Small"/>

                <TextView
                    android:id="@+id/tvExpiredDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextView.Micro.BlackDisabled"
                    tools:text="Berlaku hingga 6 Mei 2010"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnExtend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:text="@string/gm_extend_membership"
            android:textAllCaps="false"
            android:background="@drawable/gm_white_button_rounded"
            android:textColor="@color/font_black_secondary_54"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_8"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
