<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/title_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="testet"/>

    <TextView
        android:id="@+id/promo_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/title_package"
        android:layout_toEndOf="@id/title_package"
        android:layout_toRightOf="@+id/title_package"
        android:text="@string/best_deal"
        android:textColor="@color/gmsubscribe_product_price_color"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="testet"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/description_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title_package"
        android:layout_alignStart="@id/title_package"
        android:layout_below="@id/title_package"
        android:textSize="14sp"
        tools:text="testet"/>

    <TextView
        android:id="@+id/description_free_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title_package"
        android:layout_alignStart="@id/title_package"
        android:layout_below="@id/description_package"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="testet"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title_package"
        android:layout_alignStart="@id/title_package"
        android:layout_below="@id/description_free_days"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/gmsubscribe_product_price_color"
            android:textSize="16sp"
            tools:text="testet"/>

        <TextView
            android:id="@+id/last_price_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gmsubscribe_product_price_color"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="testet"
            tools:visibility="visible"/>


    </LinearLayout>


    <ImageView
        android:id="@+id/icon_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_gmsubscribe_product_item_selected" />


</RelativeLayout>
