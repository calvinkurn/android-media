<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:id="@+id/layout_view">
        <TextView
            android:id="@+id/title_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_16"
            style="@style/TextView.Small"
            android:layout_marginEnd="@dimen/dp_16" />

        <TextView
            android:id="@+id/promo_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/title_package"
            android:layout_toRightOf="@+id/title_package"
            android:text="@string/best_deal"
            android:textColor="@color/gmsubscribe_product_membership_promo_color"
            android:visibility="gone"
            android:background="@drawable/gm_promo_membership_item_rounded"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:paddingRight="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            style="@style/TextView.Micro"
            tools:text="Best Deal"
            tools:visibility="visible"/>

        <LinearLayout
            android:id="@+id/layoutPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title_package"
            android:layout_alignStart="@id/title_package"
            android:layout_below="@id/title_package"
            android:layout_marginRight="@dimen/dp_24"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_4">

            <TextView
                android:id="@+id/price_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_8"
                style="@style/TextView.Small"
                android:layout_marginEnd="@dimen/dp_8" />

            <TextView
                android:id="@+id/last_price_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextView.Small"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/description_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layoutPrice"
            android:layout_alignStart="@id/layoutPrice"
            android:layout_below="@id/layoutPrice"
            style="@style/TextView.Micro.BlackDisabled" />

        <TextView
            android:id="@+id/description_free_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layoutPrice"
            android:layout_alignStart="@id/layoutPrice"
            android:layout_below="@id/description_package"
            style="@style/TextView.Micro.BlackDisabled"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/icon_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_gmsubscribe_product_item_selected" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@drawable/divider300"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16" />

</LinearLayout>
