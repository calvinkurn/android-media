<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.gm.subscribe">

    <application
        android:allowBackup="true"
        android:label="@string/app_name">
        <activity
            android:name=".view.activity.GmSubscribeHomeActivity"
            android:label="@string/gm_home_title"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_gold_merchant_subscribe_dashboard"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.GmProductActivity"
            android:label="@string/gmsubscribe_current_product_selector"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>
        <activity
            android:name=".view.activity.GmCheckoutActivity"
            android:label="@string/gmsubscribe_checkout_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".membership.view.activity.GmMembershipActivity"
            android:label="@string/gm_membership_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_gold_merchant_membership"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".membership.view.activity.GmMembershipInfoActivity"
            android:label="@string/gm_home_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>
        <activity
            android:name=".membership.view.activity.GmMembershipProductActivity"
            android:label="@string/gm_membership_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>
    </application>

</manifest>