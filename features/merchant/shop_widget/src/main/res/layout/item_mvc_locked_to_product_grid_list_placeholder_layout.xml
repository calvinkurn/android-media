<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mvc_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmer_product_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:corners="16"
        app:layout_constraintDimensionRatio="1:1.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shimmer_product_2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmer_product_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:corners="16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintLeft_toRightOf="@id/shimmer_product_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_weight="0.5"
        app:layout_constraintWidth_percent="1" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmer_product_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:corners="16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintLeft_toRightOf="@id/shimmer_product_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_product_2"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_weight="0.5"
        app:layout_constraintWidth_percent="1" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmer_product_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:corners="16"
        app:layout_constraintDimensionRatio="1:1.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/shimmer_product_3"
        app:layout_constraintTop_toBottomOf="@id/shimmer_product_1" />

</androidx.constraintlayout.widget.ConstraintLayout>