<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mvc_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_mvc"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_sort"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_mvc" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_total_product"
        android:layout_width="140dp"
        android:layout_height="20dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toBottomOf="@id/shimmer_sort"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/shimmer_sort"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>