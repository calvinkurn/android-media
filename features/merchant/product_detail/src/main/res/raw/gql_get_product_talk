query getProductTalk($productID: String!){
    ProductTalkQuery(product_id: $productID){
        talk{
            count
            talks{
                id
                user{
                    id
                    full_name
                    admin_status
                    reputation{
                        percentage
                    }
                    thumbnail
                    shop{
                        id
                        name
                        domain
                        thumbnail
                    }
                }
                message
                total_comment
                create_time {
                    format_app_3
                }
            }
        }
        talk_response{
            talk_id
            talk_comment {
                id
                user{
                    id
                    full_name
                    admin_status
                    reputation{
                        percentage
                    }
                    thumbnail
                    shop{
                        id
                        name
                        domain
                        thumbnail
                    }
                }
                message
                total_comment
                create_time {
                    format_app_3
                }
            }
        }
    }
}