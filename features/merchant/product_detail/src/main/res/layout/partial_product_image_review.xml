<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_image_review"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_shadow_top_line"
    android:orientation="vertical"
    android:padding="@dimen/dp_16"
    android:visibility="gone"
    tools:visibility="visible">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_review_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/review_rating" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_see_all"
        android:textColor="@color/tkpd_main_green"
        app:layout_constraintBottom_toBottomOf="@+id/txt_review_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_review_title"
        app:typographyType="body_3" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:drawableEnd="@drawable/ic_rating_gold"
        android:drawableRight="@drawable/ic_rating_gold"
        android:drawablePadding="@dimen/dp_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_review_title"
        tools:text="@string/counter_pattern" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@+id/review_rating"
        app:layout_constraintLeft_toRightOf="@+id/review_rating"
        app:layout_constraintTop_toTopOf="@+id/review_rating"
        app:typographyType="body_3"
        tools:text="1205 ulasan" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_buyer_review"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

</android.support.constraint.ConstraintLayout>