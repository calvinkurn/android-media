<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/dp_16"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/pdp_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pdp_info_title"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_product_fintech_qr_normal_24"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/pdp_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/pdp_info_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pdp_info_title"
        app:srcCompat="@drawable/ic_arrow_right_grey" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/pdp_arrow_right"
        app:layout_constraintStart_toEndOf="@+id/pdp_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Varian Produk"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/charcoal_grey_88"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_info_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pdp_arrow_right"
        app:layout_constraintStart_toEndOf="@+id/pdp_icon"
        app:layout_constraintStart_toStartOf="@+id/pdp_info_title"
        app:layout_constraintTop_toBottomOf="@+id/pdp_info_title"
        app:typographyType="body_2"
        tools:text="Pilih warna dan ukuran"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>