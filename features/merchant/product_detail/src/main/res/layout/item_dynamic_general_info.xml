<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/dp_16"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/pdp_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pdp_info_title"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_product_fintech_qr_normal_24" />

    <ImageView
        android:id="@+id/pdp_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_general_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pdp_info_title"
        android:visibility="invisible"
        tools:visibility="visible"
        app:srcCompat="@drawable/ic_arrow_right_info" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/pdp_arrow_right"
        app:layout_constraintStart_toEndOf="@+id/pdp_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        android:textColor="@color/charcoal_grey_88"
        tools:text="Varian Produk"
        android:visibility="invisible"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        tools:visibility="visible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_general_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintEnd_toStartOf="@+id/pdp_arrow_right"
        app:layout_constraintStart_toEndOf="@+id/pdp_icon"
        app:layout_constraintStart_toStartOf="@+id/pdp_info_title"
        app:layout_constraintTop_toBottomOf="@+id/pdp_info_title"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dp_5" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/titleShimmering"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toTopOf="@+id/pdp_info_title"
        app:layout_constraintBottom_toBottomOf="@+id/pdp_info_title"
        app:layout_constraintStart_toStartOf="@+id/pdp_info_title"
        app:layout_constraintEnd_toEndOf="@+id/pdp_info_title"
        app:width_weight="0.8"
        android:visibility="gone"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/descShimmering"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/pdp_info_desc"
        app:layout_constraintStart_toStartOf="@+id/pdp_info_desc"
        app:layout_constraintEnd_toEndOf="@+id/pdp_info_desc"
        app:width_weight="0.6"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>