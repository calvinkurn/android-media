<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_lvl2">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ic_info_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/unify_space_0"
        android:layout_marginStart="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/desc_info_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/desc_info_item"
        android:layout_width="@dimen/unify_space_0"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/pdp_dp_3"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        tools:text="@string/ktp_protection" />

</androidx.constraintlayout.widget.ConstraintLayout>