<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_detail_a_plus_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        tools:text="Konten dari penjual" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_product_detail_a_plus_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/tv_product_detail_a_plus_image_title"
        app:layout_goneMarginTop="0dp"
        app:unify_image_corner_radius="0"
        tools:src="@drawable/qc_launcher" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_product_detail_a_plus_image_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/Unify_GN500"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/ic_product_detail_a_plus_image_toggle"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_product_detail_a_plus_image"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="Baca Selengkapnya" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_product_detail_a_plus_image_toggle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        app:icon_color_light_disabled="@color/Unify_GN500"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_color_night_disabled="@color/Unify_GN500"
        app:icon_color_night_enable="@color/Unify_GN500"
        app:icon_name="CHEVRON_DOWN"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_detail_a_plus_image_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_product_detail_a_plus_image_toggle"
        app:layout_constraintTop_toTopOf="@id/tv_product_detail_a_plus_image_toggle" />

</androidx.constraintlayout.widget.ConstraintLayout>