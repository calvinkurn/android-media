<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/pdp_shipment_info_logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:icon_color_light_enable="@color/Unify_NN600"
        app:icon_color_night_enable="@color/Unify_NN500"
        app:icon_name="CLOCK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_info_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pdp_shipment_info_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="0dp"
        app:typographyType="display_2"
        tools:text="Estimasi tiba besok - 25 Agu" />

</androidx.constraintlayout.widget.ConstraintLayout>