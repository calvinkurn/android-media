<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone"
    android:background="@color/white"
    tools:visibility="visible"
    android:paddingBottom="@dimen/dp_16"
    android:id="@+id/base_info_and_description">

    <View
        android:id="@+id/product_info_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/grey_separator"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_product_info_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:text="@string/label_product_info"
        android:textColor="@color/charcoal_grey_88"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_info_separator"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/title_product_info_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/separator_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_separator"
        app:layout_constraintTop_toBottomOf="@+id/rv_info"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_product_desc_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_product_desc"
        android:textColor="@color/charcoal_grey_88"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator_desc"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/youtube_scroll"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_16"
        android:transitionName="@string/transition_video_horizontal_scroll"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_product_desc_label"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_product_descr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_product_desc"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:autoLink="all"
        android:ellipsize="end"
        android:longClickable="false"
        app:typographyType="body_2"
        android:maxLines="@integer/default_description_lines"
        android:transitionName="@string/transition_description"
        android:textIsSelectable="false"
        android:lineSpacingExtra="@dimen/sp_8"
        tools:text="Pilihan tepat untuk dekorasi rumah minimalis modern Anda, atau untuk mengimbangi interior unik pilihan Anda. Tersedia dalam 4 pilihan warna, hitam, putih, biru, dan jingga. .."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youtube_scroll"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/label_see_detail_product_descr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/sp_8"
        android:text="@string/label_read_detail"
        android:textColor="@color/tkpd_main_green"
        app:typographyType="body_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_descr"/>
</androidx.constraintlayout.widget.ConstraintLayout>