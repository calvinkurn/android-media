<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/carousel_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:contentDescription="@string/pdp_category_applink" />
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/top_ads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/Unify_N700_32"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="@color/Unify_N0"
        android:lineSpacingExtra="4sp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="7dp"
        android:text="@string/home_flashsale_card_ad"
        tools:text="Ads"
        app:typographyType="small"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="@+id/carousel_image"
        app:layout_constraintBottom_toBottomOf="@+id/carousel_image" />
</androidx.constraintlayout.widget.ConstraintLayout>
