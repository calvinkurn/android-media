<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_notify_me"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/top_separator_notifyme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="#f3f4f5"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_notify_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/notify_me_title"
        android:textColor="@color/light_N700_96"
        app:layout_constraintBottom_toTopOf="@+id/product_notify_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_separator_notifyme"
        app:typographyType="body_1"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_notify_subtitle"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="Dimulai dalam"
        android:textColor="@color/light_N700_AE"
        app:layout_constraintBottom_toTopOf="@id/bottom_separator_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_notify_title"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.design.countdown.CountDownView
        android:id="@+id/notify_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        app:coundDownBackgroud="@drawable/bg_countdown_partial_orange"
        app:countDownSparatorColor="@color/bg_countdown_red"
        app:countDownTxtColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/product_notify_subtitle"
        app:layout_constraintLeft_toRightOf="@id/product_notify_subtitle"
        app:layout_constraintTop_toTopOf="@+id/product_notify_subtitle" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_notify_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="notify_count_down,product_notify_subtitle, product_notify_title"/>

    <ImageView
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toTopOf="@id/bottom_separator_desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_separator_notifyme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/bg_notify_me_rounded"
        />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_notify_me"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center"
        android:minWidth="106dp"
        android:text="@string/notify_me_inactive"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_separator_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/barrier_notify_me"
        app:layout_constraintTop_toBottomOf="@+id/top_separator_notifyme"
        app:unifyButtonSize="small"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost" />

    <View
        android:id="@+id/bottom_separator_desc"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        app:layout_constraintBottom_toBottomOf="@+id/layout_notify_me" />

</androidx.constraintlayout.widget.ConstraintLayout>