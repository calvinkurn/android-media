<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <com.tokopedia.product.info.widget.TitleAnimatedChevron
        android:id="@+id/expandable_title_chevron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/expandable_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        tools:src="@tools:sample/avatars"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:visibility="gone" />

    <View
        android:id="@+id/expandable_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/Unify_N75"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_item_title_1" />

</LinearLayout>