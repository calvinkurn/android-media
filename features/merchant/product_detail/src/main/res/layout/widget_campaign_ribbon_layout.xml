    android:layout_height="wrap_content">

    <include
        android:id="@+id/campaign_ribbon_type_1"
        layout="@layout/widget_campaign_ribbon_type_1_layout"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <include
        android:id="@+id/campaign_ribbon_type_2"
        layout="@layout/widget_campaign_ribbon_type_2_layout"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
