<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/shop_credibility_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/Unify_N50"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shop_credibility_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_16"
        android:visibility="gone"
        tools:visibility="visible">

        <!--region HEADER-->
        <ImageView
            android:id="@+id/shop_ava"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            app:layout_constraintEnd_toStartOf="@+id/iv_badge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/Unify_G400" />

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_12"
            android:visibility="gone"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/shop_name"
            app:layout_constraintLeft_toRightOf="@+id/shop_ava"
            app:layout_constraintStart_toEndOf="@+id/shop_ava"
            app:layout_constraintTop_toTopOf="@+id/shop_name"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_official_store_product"
            tools:visibility="gone" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/shop_feature"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/iv_badge"
            app:layout_constraintTop_toTopOf="@+id/shop_ava"
            app:layout_constraintBottom_toTopOf="@+id/shop_last_active"
            app:layout_goneMarginStart="@dimen/dp_12"
            app:typographyType="heading_4"
            app:typographyWeight="bold"
            tools:text="SHOP NAME Shop name  12" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/bg_rounded_grey_250"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/shop_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/shop_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop_name"
            app:layout_constraintTop_toTopOf="@+id/shop_name"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="By GoApotik"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_last_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_12"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintStart_toEndOf="@+id/shop_ava"
            app:layout_constraintTop_toBottomOf="@+id/shop_name"
            app:layout_goneMarginStart="@dimen/dp_0"
            app:typographyType="body_3"
            tools:text="Online 20 menit lalu" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_location_online"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop_last_active"
            app:layout_constraintTop_toTopOf="@+id/shop_last_active"
            app:typographyType="body_3"
            tools:text="â€¢ Jakarta Barat" />

        <!--endregion-->

        <!--region First Info-->
        <LinearLayout
            android:id="@+id/shop_info_container_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_goneMarginBottom="@dimen/dp_16"
            app:layout_constraintBottom_toTopOf="@+id/shop_info_container_2"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/btn_follow"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_ava"
            tools:visibility="visible">

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/shop_info_ic_1"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                tools:icon_name="STAR"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shop_info_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:gravity="center"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_2"
                tools:text="1 menit" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shop_info_desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/dp_1"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3"
                tools:text="chat dibalas" />
        </LinearLayout>

        <!--region Second Info-->
        <LinearLayout
            android:id="@+id/shop_info_container_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_follow"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/shop_info_container_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_info_container_1"
            app:layout_goneMarginTop="@dimen/dp_16"
            tools:visibility="visible">

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/shop_info_ic_2"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:gravity="center"
                tools:icon_name="CHAT"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shop_info_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:gravity="center"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_2"
                tools:text="1.234" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shop_info_desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/dp_1"
                android:textColor="@color/Unify_N700_68"
                app:typographyType="body_3"
                tools:text="produk terjual" />
        </LinearLayout>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_follow"
            android:layout_width="@dimen/product_detail_dp_88"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_follow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_ava"
            app:unifyButtonSize="small"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/shop_credibility_shimmering"
        layout="@layout/item_shimmer_shop_credibility"
        android:visibility="visible" />

</LinearLayout>