<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/shop_credibility_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/grey_separator"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shop_credibility_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:padding="@dimen/dp_16">

        <!--region HEADER-->
        <ImageView
            android:id="@+id/shop_ava"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/iv_badge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/tkpd_main_green" />

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/shop_name"
            app:layout_constraintLeft_toRightOf="@+id/shop_ava"
            app:layout_constraintStart_toEndOf="@+id/shop_ava"
            app:layout_constraintTop_toTopOf="@+id/shop_name"
            tools:ignore="ContentDescription"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            tools:src="@drawable/ic_official_store_product"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/shop_feature"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/iv_badge"
            app:layout_constraintTop_toTopOf="@+id/shop_ava"
            app:layout_goneMarginStart="@dimen/dp_0"
            app:typographyType="heading_4"
            app:typographyWeight="bold"
            tools:text="SHOP NAME Shop name  12" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/bg_rounded_grey_250"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_3"
            app:typographyWeight="bold"
            android:textColor="@color/light_N700_68"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/shop_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/shop_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop_name"
            app:layout_constraintTop_toTopOf="@+id/shop_name"
            app:typographyType="small"
            tools:text="By GoApotik"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_last_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintStart_toEndOf="@+id/shop_ava"
            app:layout_constraintTop_toBottomOf="@+id/shop_name"
            app:typographyType="body_3"
            app:layout_goneMarginStart="@dimen/dp_0"
            tools:text="Online 20 menit lalu" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_location_online"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop_last_active"
            app:layout_constraintTop_toTopOf="@+id/shop_last_active"
            app:typographyType="body_3"
            tools:text="• Jakarta Barat" />

        <!--endregion-->

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            tools:visibility="gone"
            app:constraint_referenced_ids="shop_ava,shop_location_online,shop_last_active" />

        <!--region First Info-->
        <LinearLayout
            android:id="@+id/shop_info_container_1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/shop_info_container_2"
            app:layout_constraintStart_toStartOf="@+id/barrier"
            app:layout_constraintTop_toBottomOf="@+id/barrier">

            <ImageView
                android:id="@+id/shop_info_ic_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_review_gray" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shop_info_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:textColor="@color/light_N700_96"
                app:typographyType="body_2"
                tools:text="1 menit" />
        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_info_desc_1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintEnd_toStartOf="@+id/shop_info_desc_2"
            app:layout_constraintStart_toStartOf="@+id/shop_info_container_1"
            app:layout_constraintTop_toBottomOf="@+id/shop_info_container_1"
            app:typographyType="body_3"
            tools:text="total barang" />

        <!--endregion-->

        <!--region Second Info-->
        <LinearLayout
            android:id="@+id/shop_info_container_2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/shop_info_container_3"
            app:layout_constraintStart_toEndOf="@+id/shop_info_container_1"
            app:layout_constraintTop_toTopOf="@+id/shop_info_container_1">

            <ImageView
                android:id="@+id/shop_info_ic_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_review_gray" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shop_info_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:textColor="@color/light_N700_96"
                app:typographyType="body_2"
                tools:text="± 1 jam" />
        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_info_desc_2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintEnd_toStartOf="@+id/shop_info_desc_3"
            app:layout_constraintStart_toEndOf="@+id/shop_info_desc_1"
            app:layout_constraintTop_toBottomOf="@+id/shop_info_container_2"
            app:typographyType="body_3"
            tools:text="pesanan diproses" />

        <!--endregion-->

        <!--region Third Info-->
        <LinearLayout
            android:id="@+id/shop_info_container_3"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop_info_container_2"
            app:layout_constraintTop_toTopOf="@+id/shop_info_container_2">

            <ImageView
                android:id="@+id/shop_info_ic_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_review_gray" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/shop_info_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:gravity="center_horizontal"
                android:textColor="@color/light_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:typographyType="body_2"
                tools:text="± 1 jam" />
        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_info_desc_3"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/Neutral_N700_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop_info_desc_2"
            app:layout_constraintTop_toBottomOf="@+id/shop_info_container_3"
            app:typographyType="body_3"
            tools:text="pesanan diproses" />
        <!--endregion-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/shop_credibility_shimmering"
        android:visibility="visible"
        layout="@layout/item_shimmer_shop_credibility"/>

</LinearLayout>