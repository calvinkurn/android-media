<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_recom_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:visibility="gone"
    tools:ignore="RtlSymmetry"
    tools:visibility="visible">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/title_recom_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:text="@string/pdp_title_recommended_product"
        app:fontSize="title"
        app:textViewTheme="lightPrimary"
        app:weight="medium" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/product_recom_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:clipToPadding="false"
            android:descendantFocusability="blocksDescendants"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:scrollbars="none"
            android:visibility="visible"
            tools:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_product_recommendation"
            tools:orientation="horizontal"
            tools:visibility="visible" />

        <include
            android:id="@+id/loading_recom_2"
            layout="@layout/partial_shimmering_grid_list_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

</LinearLayout>