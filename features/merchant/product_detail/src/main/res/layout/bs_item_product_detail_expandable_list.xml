<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <com.tokopedia.product.info.widget.TitleAnimatedChevron
        android:id="@+id/expandable_title_chevron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/expandable_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/bs_product_detail_label_shop_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/merchant_product_detail_shop_notes_label"
            android:textColor="@color/Unify_NN950_96"
            app:typographyType="display_2" />

    </LinearLayout>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/expandable_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/Unify_NN50" />
</LinearLayout>