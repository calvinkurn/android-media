<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.product.info.widget.TitleAnimatedChevron
        android:id="@+id/expandable_title_chevron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/expandable_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@tools:sample/avatars">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="body_2"
            android:textColor="@color/Unify_N700_96"
            android:text="Baca info penting terkait pembelian dari toko ini." />

    </LinearLayout>

    <View
        android:id="@+id/expandable_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/Neutral_N75"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_item_title_1" />

</LinearLayout>