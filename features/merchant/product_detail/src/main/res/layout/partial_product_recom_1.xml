<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_recom_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:visibility="gone"
    tools:ignore="RtlSymmetry"
    tools:visibility="visible">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">
        <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/title_recom_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/title_other_product"
                android:layout_weight="1"
                app:fontSize="title"
                app:textViewTheme="lightPrimary"
                app:weight="medium" />
        <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/see_more_recom_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:lineSpacingExtra="@dimen/sp_6"
                android:text="@string/recom_see_more_title"
                android:textColor="@color/green_500"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                app:typographyType="heading_5"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_recom_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:clipToPadding="false"
            android:descendantFocusability="blocksDescendants"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:scrollbars="none"
            android:visibility="gone"
            tools:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_product_recommendation"
            tools:orientation="horizontal"
            tools:visibility="visible" />

        <include
            android:id="@+id/loading_recom_1"
            layout="@layout/partial_shimmering_grid_list_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

</LinearLayout>