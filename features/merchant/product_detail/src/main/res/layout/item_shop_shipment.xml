<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/courier_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/courier_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        tools:text="JNE"
        app:fontSize="title"
        app:textViewTheme="lightSecondary"
        app:layout_goneMarginLeft="0dp"
        app:layout_goneMarginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/courier_item_image"
        app:layout_constraintStart_toEndOf="@+id/courier_item_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/courier_item_info"
        app:layout_constraintVertical_chainStyle="packed"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/courier_item_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        tools:text="Reguler, YES"
        app:fontSize="micro"
        app:textViewTheme="lightDisabled"
        app:layout_constraintTop_toBottomOf="@+id/courier_item_name"
        app:layout_constraintLeft_toLeftOf="@+id/courier_item_name"
        app:layout_constraintStart_toStartOf="@+id/courier_item_name"
        app:layout_constraintRight_toRightOf="@+id/courier_item_name"
        app:layout_constraintEnd_toEndOf="@+id/courier_item_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>