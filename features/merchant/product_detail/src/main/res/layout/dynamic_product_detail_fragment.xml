<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_pdp_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:gravity="top"
            android:visibility="visible"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:id="@+id/layout_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_toStartOf="@+id/btn_wishlist"
                android:layout_toLeftOf="@+id/btn_wishlist"
                android:background="@drawable/pdp_bg_search"
                android:orientation="horizontal"
                android:padding="@dimen/dp_4">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_search_bar" />

                <TextView
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:background="@null"
                    android:ellipsize="end"
                    android:enabled="true"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/pdp_search_hint"
                    android:inputType="none"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColorHint="@color/grey_500"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipeRefreshPdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:descendantFocusability="blocksDescendants"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="@+id/btn_pdp_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_pdp_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/swipeRefresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.tokopedia.stickylogin.view.StickyLoginView
            android:id="@+id/sticky_login_pdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sticky_bg_color"
            app:layout_constraintTop_toTopOf="parent"
            app:sticky_highlight_color="@color/g_500"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/base_btn_action"
            app:layout_constraintTop_toBottomOf="@+id/swipeRefresh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:sticky_left_icon="@drawable/ic_toped_widget_login" />

        <RelativeLayout
            android:id="@+id/base_btn_affiliate_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/card_shadow_top"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sticky_login_pdp"
            android:visibility="gone">

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/getCommissionPdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/affiliate_get_commission"
                android:visibility="gone"
                tools:visibility="visible"
                app:fontSize="small"
                app:textViewTheme="lightSecondary"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/commissionPdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/getCommissionPdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/btn_affiliate"
                android:layout_toLeftOf="@+id/btn_affiliate"
                android:textColor="@color/af_commission_blue"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"
                app:fontSize="small"
                tools:text="Rp500.000.000.000" />

            <RelativeLayout
                android:id="@+id/btn_affiliate_pdp"
                android:layout_width="@dimen/dp_145"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_button_green"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                tools:ignore="UnusedAttribute">

                <com.tokopedia.design.component.TextViewCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:text="@string/button_affiliate"
                    app:fontSize="small"
                    app:textViewTheme="darkPrimary" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/loadingAffiliateDynamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:visibility="gone"
                android:background="@color/white">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>
        </RelativeLayout>

        <include
            layout="@layout/partial_layout_button_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sticky_login_pdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>