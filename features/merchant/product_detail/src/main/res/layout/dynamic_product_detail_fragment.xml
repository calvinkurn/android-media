<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_pdp_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="visible"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/pdp_bg_search"
            android:layout_toStartOf="@+id/btn_wishlist"
            android:layout_toLeftOf="@+id/btn_wishlist"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                app:srcCompat="@drawable/ic_product_detail_search_bar" />

            <TextView
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:background="@null"
                android:ellipsize="end"
                android:enabled="true"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="@string/pdp_search_hint"
                android:inputType="none"
                android:lines="1"
                android:maxLines="1"
                android:textColorHint="@color/Unify_N200"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <com.tokopedia.searchbar.navigation_component.NavToolbar
        android:id="@+id/pdp_navtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        android:visibility="gone"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:toolbarAlwaysShowShadow="false"
        app:toolbarBackButton="back"
        app:toolbarContentType="typeSearchbar"
        app:toolbarInitialTheme="light" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/toolbar_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="pdp_navtoolbar, search_pdp_toolbar"
        app:barrierDirection="bottom"/>

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipeRefreshPdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="@+id/pdp_button_barrier"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_barrier">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/pdp_button_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="btn_pdp_container,base_btn_follow" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_pdp_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/swipeRefresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.tokopedia.stickylogin.view.StickyLoginView
            android:id="@+id/sticky_login_pdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:sticky_highlight_color="@color/Unify_G500"
            app:layout_constraintBottom_toTopOf="@+id/base_btn_action"
            app:layout_constraintTop_toBottomOf="@+id/swipeRefresh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:sticky_left_icon="@drawable/ic_toped_widget_login" />

        <include
            android:id="@+id/partial_layout_button_action"
            layout="@layout/partial_layout_button_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sticky_login_pdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/base_btn_follow"
        layout="@layout/layout_button_npl_follow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>