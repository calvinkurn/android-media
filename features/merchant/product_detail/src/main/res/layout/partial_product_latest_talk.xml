<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_latest_talk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_shadow_top_line"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_22"
    android:visibility="gone"
    tools:visibility="visible">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/title_latest_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_latest_talk"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:fontSize="title"
        app:textViewTheme="lightPrimary"
        app:weight="medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_talk_user_ava"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        tools:src="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/title_latest_talk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_talk_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        tools:text="Achmad Zaky"
        app:fontSize="small"
        app:weight="medium"
        app:textViewTheme="lightPrimary"
        app:layout_constraintTop_toTopOf="@+id/iv_talk_user_ava"
        app:layout_constraintLeft_toRightOf="@+id/iv_talk_user_ava"
        app:layout_constraintStart_toEndOf="@+id/iv_talk_user_ava"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_talk_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        tools:text="20 Okt 2016 pukul 10:20"
        app:fontSize="micro"
        app:textViewTheme="lightDisabled"
        app:layout_constraintTop_toBottomOf="@+id/txt_talk_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/txt_talk_user_name"
        app:layout_constraintStart_toStartOf="@+id/txt_talk_user_name"
        app:layout_constraintRight_toRightOf="@+id/txt_talk_user_name"
        app:layout_constraintEnd_toEndOf="@+id/txt_talk_user_name"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_talk_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineSpacingExtra="@dimen/sp_4"
        tools:text="dsdadadnsohdoiasdosahdosahdosahdoishdlashdlashdsdalsdhlashdashdaohdsahdhsaodihsidoiashddsajddbsadsjbalbdjlsa"
        android:ellipsize="end"
        app:fontSize="small"
        app:textViewTheme="lightSecondary"
        app:layout_constraintTop_toBottomOf="@+id/txt_talk_date"
        app:layout_constraintLeft_toLeftOf="@+id/txt_talk_user_name"
        app:layout_constraintStart_toStartOf="@+id/txt_talk_user_name"
        app:layout_constraintRight_toRightOf="@+id/txt_talk_user_name"
        app:layout_constraintEnd_toEndOf="@+id/txt_talk_user_name"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_resp_user_ava"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/dp_8"
        android:visibility="gone"
        tools:src="@color/grey_300"
        app:layout_constraintTop_toBottomOf="@+id/txt_talk_message"
        app:layout_constraintLeft_toLeftOf="@+id/txt_talk_user_name"
        app:layout_constraintStart_toStartOf="@+id/txt_talk_user_name"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_resp_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:visibility="gone"
        tools:text="Achmad Zaky"
        app:fontSize="small"
        app:weight="medium"
        app:textViewTheme="lightPrimary"
        app:layout_constraintTop_toTopOf="@+id/iv_resp_user_ava"
        app:layout_constraintLeft_toRightOf="@+id/iv_resp_user_ava"
        app:layout_constraintStart_toEndOf="@+id/iv_resp_user_ava"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_resp_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        android:visibility="gone"
        tools:text="20 Okt 2016 pukul 10:20"
        app:fontSize="micro"
        app:textViewTheme="lightDisabled"
        app:layout_constraintTop_toBottomOf="@+id/txt_resp_user_name"
        app:layout_constraintLeft_toLeftOf="@+id/txt_resp_user_name"
        app:layout_constraintStart_toStartOf="@+id/txt_resp_user_name"
        app:layout_constraintRight_toRightOf="@+id/txt_resp_user_name"
        app:layout_constraintEnd_toEndOf="@+id/txt_resp_user_name"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_resp_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineSpacingExtra="@dimen/sp_4"
        android:visibility="gone"
        tools:text="dsdadadnsohdoiasdosahdosahdosahdoishdlashdlashdsdalsdhlashdashdaohdsahdhsaodihsidoiashddsajddbsadsjbalbdjlsa"
        android:ellipsize="end"
        app:fontSize="small"
        app:textViewTheme="lightSecondary"
        app:layout_constraintTop_toBottomOf="@+id/txt_resp_date"
        app:layout_constraintLeft_toLeftOf="@+id/txt_resp_user_name"
        app:layout_constraintStart_toStartOf="@+id/txt_resp_user_name"
        app:layout_constraintRight_toRightOf="@+id/txt_resp_user_name"
        app:layout_constraintEnd_toEndOf="@+id/txt_resp_user_name"/>

    <View android:background="@color/grey_300"
        android:id="@+id/divider_latest_talk"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_half"
        app:layout_constraintTop_toBottomOf="@+id/txt_resp_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_see_all_talk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/tkpd_main_green"
        android:lineSpacingExtra="@dimen/sp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        tools:text="@string/label_see_all_talk"
        app:fontSize="small"
        app:layout_constraintTop_toBottomOf="@+id/divider_latest_talk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>