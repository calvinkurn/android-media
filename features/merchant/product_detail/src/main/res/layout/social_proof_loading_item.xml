<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pdp_shimmering_social_proof"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:visibility="visible">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_txt_1"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/separator_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/separator_1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/loader_txt_1"
        app:layout_constraintEnd_toStartOf="@+id/loader_txt_2"
        app:layout_constraintStart_toEndOf="@+id/loader_txt_1"
        app:layout_constraintTop_toTopOf="@+id/loader_txt_1" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_txt_2"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/separator_2"
        app:layout_constraintStart_toEndOf="@+id/separator_1"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/separator_2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/loader_txt_2"
        app:layout_constraintEnd_toStartOf="@+id/loader_txt_3"
        app:layout_constraintStart_toEndOf="@+id/loader_txt_2"
        app:layout_constraintTop_toTopOf="@+id/loader_txt_2" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_txt_3"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator_2"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>