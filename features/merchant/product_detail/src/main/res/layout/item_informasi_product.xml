<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/title_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/label_pre_order"
        app:fontSize="small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textViewTheme="lightPrimary"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/desc_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:fontSize="small"
        app:layout_constraintBottom_toBottomOf="@+id/title_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_info"
        app:textViewTheme="lightPrimary"
        tools:text="4 hari"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>