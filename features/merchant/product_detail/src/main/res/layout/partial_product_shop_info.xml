<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/base_shop_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible"
    android:padding="@dimen/dp_16"
    android:background="@drawable/bg_bottom_shadow_top_line">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/label_shop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_shop_label"
        app:fontSize="title"
        app:weight="medium"
        app:textViewTheme="lightPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/shop_ava"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="centerCrop"
        tools:src="@color/tkpd_main_green"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toBottomOf="@+id/label_shop_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView android:id="@+id/iv_badge"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@drawable/ic_official_store"
        app:layout_constraintLeft_toRightOf="@+id/shop_ava"
        app:layout_constraintStart_toEndOf="@+id/shop_ava"
        app:layout_constraintTop_toTopOf="@+id/shop_name"
        app:layout_constraintBottom_toBottomOf="@+id/shop_name"
        tools:ignore="ContentDescription" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        tools:text="SHOP NAME"
        app:layout_goneMarginLeft="@dimen/dp_12"
        app:layout_goneMarginStart="@dimen/dp_12"
        app:fontSize="small"
        app:textViewTheme="lightPrimary"
        app:layout_constraintLeft_toRightOf="@+id/iv_badge"
        app:layout_constraintStart_toEndOf="@+id/iv_badge"
        app:layout_constraintTop_toTopOf="@+id/shop_ava"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView android:id="@+id/iv_location"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        app:srcCompat="@drawable/ic_icon_location_grey"
        app:layout_constraintLeft_toRightOf="@+id/shop_ava"
        app:layout_constraintStart_toEndOf="@+id/shop_ava"
        app:layout_constraintTop_toTopOf="@+id/shop_location_online"
        app:layout_constraintBottom_toBottomOf="@+id/shop_location_online"
        tools:ignore="ContentDescription" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/shop_location_online"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="SHOP NAME"
        app:fontSize="micro"
        app:textViewTheme="lightDisabled"
        app:layout_constraintLeft_toRightOf="@+id/iv_location"
        app:layout_constraintStart_toEndOf="@+id/iv_location"
        app:layout_constraintTop_toBottomOf="@+id/shop_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/l_medal"
        tools:layout_height="@dimen/dp_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_gravity="start"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/shop_location_online"
        app:layout_constraintLeft_toRightOf="@+id/shop_ava"
        app:layout_constraintStart_toEndOf="@+id/shop_ava"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/send_msg_shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_8"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/light_primary"
        android:text="@string/label_chat_seller"
        android:background="@drawable/bg_button_white_border"
        android:padding="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center"
        app:layout_goneMarginRight="@dimen/dp_0"
        app:layout_goneMarginEnd="@dimen/dp_0"
        app:drawableLeftCompat="@drawable/ic_topchat"
        app:layout_constraintTop_toBottomOf="@+id/l_medal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_favorite"
        app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/btn_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_8"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/dark_primary"
        android:text="@string/label_favorite"
        android:background="@drawable/bg_button_green"
        android:padding="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:gravity="center"
        app:layout_goneMarginLeft="@dimen/dp_0"
        app:layout_goneMarginStart="@dimen/dp_0"
        app:drawableLeftCompat="@drawable/ic_plus_add_white_24"
        app:layout_constraintTop_toTopOf="@+id/send_msg_shop"
        app:layout_constraintBottom_toBottomOf="@+id/send_msg_shop"
        app:layout_constraintLeft_toRightOf="@+id/send_msg_shop"
        app:layout_constraintStart_toEndOf="@+id/send_msg_shop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

</android.support.constraint.ConstraintLayout>