<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_month_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pdp_installment_price_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        tools:text="Cicilan 6x" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_installment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_month_count"
        app:layout_constraintEnd_toStartOf="@+id/tv_installment_price_ext"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        tools:text="-" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_installment_price_ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pdp_installment_price_ext"
        app:layout_constraintBottom_toBottomOf="@+id/tv_installment_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_installment_minimum_price_ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/Unify_NN500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_installment_price"
        app:typographyType="display_2" />

</androidx.constraintlayout.widget.ConstraintLayout>