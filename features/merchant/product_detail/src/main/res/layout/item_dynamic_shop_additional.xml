<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shop_additional_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/top_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shop_additional_shimmer_loader"
        layout="@layout/item_dynamic_shop_additional_loading" />

    <ViewStub
        android:id="@+id/shop_additional_shimmer_layout_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/item_dynamic_shop_additional_content" />

</androidx.appcompat.widget.LinearLayoutCompat>