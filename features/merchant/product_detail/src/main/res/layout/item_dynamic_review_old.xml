<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_16"
    android:orientation="vertical">

    <View
        android:id="@+id/review_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/grey_separator" />

    <include
        android:id="@+id/container_image_review"
        layout="@layout/item_dynamic_image_review" />

    <include
        android:id="@+id/container_most_helpful_review"
        layout="@layout/item_dynamic_mosthelpful_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>