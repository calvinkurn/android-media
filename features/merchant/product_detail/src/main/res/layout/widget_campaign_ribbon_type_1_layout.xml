<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/campaign_ribbon_layout_s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_default_flash_sale"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_name_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/pdp_dp_10"
            android:text="Harga Spesial"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            tools:ignore="MissingConstraints,RtlSymmetry" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/transparent_asset_type_3"
            tools:ignore="MissingConstraints" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/remind_me_button_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:background="@drawable/bg_remind_me_btn"
            android:padding="@dimen/spacing_lvl3"
            android:text="Ingatkan Saya"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.design.countdown.CountDownView
            android:id="@+id/count_down_view_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:background="@drawable/bg_countdown_rounded_white"
            app:coundDownBackgroud="@android:color/transparent"
            app:countDownSparatorColor="@color/Unify_R500"
            app:countDownTxtColor="@color/Unify_R500"
            app:layout_constraintLeft_toRightOf="@id/tv_start_in"
            app:layout_constraintTop_toBottomOf="@id/tpg_campaign_name_s1"
            tools:ignore="RtlSymmetry" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_start_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:text="Dimulai dalam"
            android:textColor="@color/Unify_N0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tpg_campaign_name_s1"
            app:typographyType="small"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lvl3"
            app:layout_constraintTop_toBottomOf="@id/count_down_view_s1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/regulatory_info_layout_s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_default_flash_sale"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/campaign_ribbon_layout_s1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_regulatory_info_s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_regulatory_info_overlay"
            android:paddingLeft="@dimen/spacing_lvl4"
            android:paddingTop="@dimen/spacing_lvl2"
            android:paddingBottom="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small"
            tools:text="Khusus pembayaran dengan OVO" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>