<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/bg_gradient_default_green"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/campaign_ribbon_layout_s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_name_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/pdp_dp_7"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            tools:ignore="MissingConstraints,RtlSymmetry"
            tools:text="Harga Spesial" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="fitEnd"
            app:layout_constraintBottom_toBottomOf="@id/tus_timer_view_s1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/transparent_asset_big"
            tools:ignore="MissingConstraints" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/remind_me_button_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:background="@drawable/bg_remind_me_btn_inactive"
            android:maxLines="1"
            android:padding="@dimen/spacing_lvl3"
            android:text="@string/notify_me_inactive"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.timer.TimerUnifySingle
            android:id="@+id/tus_timer_view_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl2"
            app:layout_constraintTop_toTopOf="@+id/tv_start_in_s1"
            app:layout_constraintLeft_toRightOf="@id/tv_start_in_s1"
            app:layout_constraintBottom_toBottomOf="@id/tv_start_in_s1"
            app:timer_unify_single_variant="alternate" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_start_in_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:text="@string/notify_me_subtitle_main"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tpg_campaign_name_s1"
            app:typographyType="small"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/pdp_dp_7"
            app:layout_constraintTop_toBottomOf="@id/tus_timer_view_s1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/regulatory_info_layout_s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_default_green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/campaign_ribbon_layout_s1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_regulatory_info_s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_regulatory_info_overlay"
            android:paddingStart="@dimen/spacing_lvl4"
            android:paddingTop="@dimen/spacing_lvl2"
            android:paddingBottom="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small"
            tools:ignore="RtlSymmetry"
            tools:text="Khusus pembayaran dengan OVO" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>