<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <!--    region header-->
    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_detail_img"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toTopOf="@+id/loader_detail_title_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_detail_img"
        app:layout_constraintTop_toTopOf="@+id/loader_detail_img" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/loader_detail_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_detail_img"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_title"
        app:width_weight="0.4" />
    <!--endregion-->

    <!--    region shimmer item 1-->
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_item_title_1"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_img" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_item_value_1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/loader_detail_item_title_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_detail_item_title_1"
        app:layout_constraintTop_toTopOf="@+id/loader_detail_item_title_1"
        app:width_weight="0.8" />

    <View
        android:id="@+id/divider_shimmer_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/Unify_N75"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_item_title_1" />
    <!--endregion-->

    <!--    region shimmer item 2-->
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_item_title_2"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_shimmer_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_item_value_2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/loader_detail_item_title_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_detail_item_title_2"
        app:layout_constraintTop_toTopOf="@+id/loader_detail_item_title_2"
        app:width_weight="0.8" />

    <View
        android:id="@+id/divider_shimmer_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/Unify_N75"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_item_title_2" />
    <!--endregion-->

    <!--    region shimmer item 3-->
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_item_title_3"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_shimmer_2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_item_value_3"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/loader_detail_item_title_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_detail_item_title_3"
        app:layout_constraintTop_toTopOf="@+id/loader_detail_item_title_3"
        app:width_weight="0.8" />

    <View
        android:id="@+id/divider_shimmer_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/Unify_N75"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_item_title_3" />
    <!--endregion-->

    <!--    region shimmer item 4-->
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_item_title_4"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_shimmer_3" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_item_value_4"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/loader_detail_item_title_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_detail_item_title_4"
        app:layout_constraintTop_toTopOf="@+id/loader_detail_item_title_4"
        app:width_weight="0.8" />

    <View
        android:id="@+id/divider_shimmer_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/Unify_N75"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_item_title_4" />
    <!--endregion-->

    <!--    region footer-->
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_detail_tite_discussion"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_shimmer_4" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_detail_discussion_btn"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_tite_discussion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
<!--endregion-->
</androidx.constraintlayout.widget.ConstraintLayout>