<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/pdp_shipment_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/Unify_N50"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pdp_shipment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_pdp_shipment_title"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:icon_name="COURIER"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_pdp_shipment_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/ic_pdp_shipment_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/ic_pdp_shipment_title"
            app:layout_constraintTop_toTopOf="@+id/ic_pdp_shipment_title"
            app:typographyType="heading_5"
            tools:text="Bebas Ongkir Extra (Rp0)" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_pdp_shipment_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_pdp_shipment_title"
            app:typographyType="body_3"
            tools:text="Dikirim ke Watang Sidenreng - Sidenreng"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_pdp_shipment_estimation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_pdp_shipment_subtitle"
            app:typographyType="body_3"
            tools:text="Estimasi tiba besok"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_pdp_shipment_khusus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/pdp_shipping_khusus_label"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_pdp_shipment_estimation"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_pdp_shipment_fullfillment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/txt_pdp_shipment_khusus"
            app:layout_constraintStart_toEndOf="@+id/txt_pdp_shipment_khusus"
            app:layout_constraintTop_toTopOf="@+id/txt_pdp_shipment_khusus"
            app:typographyType="body_3"
            tools:text="TokoCabang"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_pdp_shipment_other_courier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/pdp_shipping_other_courier_label"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_pdp_shipment_khusus"
            app:typographyType="body_3"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ic_pdp_shipment_bo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:scaleType="centerInside"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/txt_pdp_shipment_other_courier"
            app:layout_constraintTop_toTopOf="@+id/txt_pdp_shipment_other_courier"
            tools:src="@drawable/ic_free_shipping"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_pdp_shipment_instant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/pdp_shipping_instant_label"
            android:visibility="gone"
            app:labelType="general_light_grey"
            app:layout_constraintStart_toEndOf="@+id/ic_pdp_shipment_bo"
            app:layout_constraintTop_toTopOf="@+id/txt_pdp_shipment_other_courier"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_pdp_shipment_cod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/pdp_shipping_cod_label"
            android:visibility="gone"
            app:labelType="general_light_grey"
            app:layout_constraintStart_toEndOf="@+id/label_pdp_shipment_instant"
            app:layout_constraintTop_toTopOf="@+id/txt_pdp_shipment_other_courier"
            tools:visibility="visible" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ic_pdp_shipment_arrow_right"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:icon_name="CHEVRON_RIGHT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/item_pdp_shimmer_shipment"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.LocalLoad
        android:id="@+id/local_load_pdp_shipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unify_local_load_title="@string/variant_failed_load"
        app:unify_local_load_description="@string/variant_failed_load_description"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>