<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pdp_view_pager"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:default_measure="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/error_product_container"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:background="@color/Unify_N700_44"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_30"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/error_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/sp_8"
            app:fontSize="small"
            app:textViewTheme="darkPrimary"
            app:weight="medium"
            tools:text="Toko ini tutup hingga 17/6/2018 karena libur hari lebaran" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/error_product_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center_horizontal"
            app:fontSize="micro"
            app:textViewTheme="darkPrimary"
            app:weight="medium"
            tools:text="Jika Anda memiliki transaksi tertunda dengan toko ini selama masa tutup, Anda bisa menghubungi penjual melalui fitur kirim pesan atau Layanan Pengguna" />

    </LinearLayout>

    <com.tokopedia.unifycomponents.PageControl
        android:id="@+id/imageSliderPageControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:indicator_type="CIRCLE" />

</androidx.constraintlayout.widget.ConstraintLayout>