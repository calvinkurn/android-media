<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    app:layout_constraintTop_toBottomOf="@+id/view_picture_search_bar">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tradein_header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tradein_half_rounded"
        android:drawablePadding="@dimen/dp_8"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/tukar_tambah"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/discount_timer_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tradein_header_container"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_discount_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_right_red"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_title_discount_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_4"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:paddingRight="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:singleLine="true"
                tools:text="@string/label_flash_sale"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_2"
                app:typographyWeight="bold" />

            <com.tokopedia.design.countdown.CountDownView
                android:id="@+id/count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_countdown_rounded_white"
                android:paddingStart="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                app:coundDownBackgroud="@android:color/transparent"
                app:countDownSparatorColor="@color/Red_R500"
                app:countDownTxtColor="@color/Red_R500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/text_title_discount_timer"
                app:layout_constraintStart_toEndOf="@+id/text_title_discount_timer"
                app:layout_constraintTop_toTopOf="@+id/text_title_discount_timer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/stock_bar_sold_product"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"
            android:indeterminate="false"
            android:max="100"
            android:minWidth="@dimen/dp_150"
            android:minHeight="@dimen/dp_6"
            android:progress="25"
            tools:visibility="visible"
            android:progressDrawable="@drawable/bg_progress_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_discount_timer" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sale_text_stock_available"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="Stok tersedia (>100)"
            android:textColor="@color/light_N700_AE"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/stock_bar_sold_product"
            app:layout_constraintLeft_toRightOf="@+id/stock_bar_sold_product"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/stock_bar_sold_product"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_free_ongkir"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price_pdp"
        app:layout_constraintLeft_toRightOf="@+id/text_cashback"
        app:layout_constraintTop_toTopOf="@+id/tv_price_pdp" />

    <LinearLayout
        android:id="@+id/layout_official_store"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/product_name"
        app:layout_constraintStart_toStartOf="@+id/product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_pdp">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/label_official_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:visibility="gone"
            app:fontSize="micro"
            tools:text="Produk dari Brand Resmi"
            tools:visibility="visible" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/label_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_rounded_pink"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_2"
            android:text="@string/label_prescription"
            android:textColor="@color/Red_R400"
            android:visibility="gone"
            app:fontSize="micro"
            tools:textSize="@dimen/sp_10"
            tools:visibility="visible" />
    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_22"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/sp_5"
        app:typographyType="heading_3"
        app:layout_constraintEnd_toStartOf="@+id/fab_detail_pdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discount_timer_holder"
        tools:text="Simple Minimalistic Ergonomic White Chair" />

    <ImageView
        android:id="@+id/fab_detail_pdp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_name"
        app:layout_constraintTop_toTopOf="@+id/product_name"
        app:srcCompat="@drawable/ic_wishlist_unselected_pdp" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/text_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/bg_discount_label"
        android:paddingStart="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_2"
        android:textColor="@color/discount_selector"
        android:textIsSelectable="true"
        android:visibility="gone"
        app:fontSize="micro"
        app:layout_constraintLeft_toLeftOf="@+id/product_name"
        app:layout_constraintStart_toStartOf="@+id/product_name"
        app:layout_constraintTop_toBottomOf="@+id/product_name"
        app:weight="medium"
        tools:text="50% OFF"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/text_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:visibility="gone"
        app:fontSize="small"
        app:layout_constraintBottom_toBottomOf="@+id/text_discount"
        app:layout_constraintLeft_toRightOf="@+id/text_discount"
        app:layout_constraintStart_toEndOf="@+id/text_discount"
        app:layout_constraintTop_toTopOf="@+id/text_discount"
        app:textViewTheme="lightDisabled"
        tools:text="Rp 900.000"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/tv_price_pdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:textColor="@color/orange_red"
        app:fontSize="title"
        app:layout_constraintLeft_toLeftOf="@+id/product_name"
        app:layout_constraintStart_toStartOf="@+id/product_name"
        app:layout_constraintTop_toBottomOf="@+id/text_discount"
        app:weight="medium"
        tools:text="Rp 750.000.000" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/text_cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_6"
        android:background="@drawable/bg_cashback"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_2"
        android:textColor="@color/tkpd_main_green"
        android:visibility="gone"
        app:fontSize="micro"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price_pdp"
        app:layout_constraintLeft_toRightOf="@+id/tv_price_pdp"
        app:layout_constraintStart_toEndOf="@+id/tv_price_pdp"
        app:layout_constraintTop_toTopOf="@+id/tv_price_pdp"
        app:weight="medium"
        tools:text="Cashback 3%"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/text_stock_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lineSpacingExtra="@dimen/sp_6"
        android:visibility="gone"
        app:fontSize="micro"
        app:layout_constraintStart_toStartOf="@+id/product_name"
        app:layout_constraintTop_toBottomOf="@id/layout_official_store"
        tools:text="Stok tersedia ( >100 )"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@color/grey_300"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_stock_available"
        tools:visibility="visible" />

</merge>