<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spacing_lvl5"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_ovo_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        tools:text="OVO kamu tidak mencukupi" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/desc_ovo_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl3"
        android:gravity="center"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_2"
        tools:text="Segera top-up biar ngga kehabisan dan gunakan pengiriman Bebas Ongkir." />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N50"
        android:paddingTop="@dimen/layout_lvl1"
        android:paddingBottom="@dimen/layout_lvl1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            android:text="@string/product_detail_price__goods"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp200.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_ongkir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_price"
            android:layout_marginBottom="4dp"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            android:text="@string/product_detail_estimation_price_min"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_ongkir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp200.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_cash_and_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_ongkir"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            android:text="@string/product_detail_ovo_cash_points"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/ovo_cash_and_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_ongkir"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/layout_lvl1"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            android:textColor="@color/Unify_R500"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="- Rp200.000" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/label_cash_and_point"
            android:background="@color/Unify_N75" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/label_need_topup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_cash_and_point"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginBottom="4dp"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            android:text="@string/product_detail_total_pay"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/ovo_need_topup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ovo_cash_and_point"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginBottom="4dp"
            android:paddingLeft="@dimen/layout_lvl2"
            android:paddingRight="@dimen/layout_lvl2"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp200.000" />

    </RelativeLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_topup_instant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        tools:text="Top-up Instan OVO Cash"
        android:textStyle="bold"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_topup_other_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginBottom="@dimen/layout_lvl3"
        tools:text="Top-up dengan Metode Lain"
        android:textStyle="bold"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost" />
</LinearLayout>