<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/best_seller_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <View
        android:id="@+id/top_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        tools:visibility="visible"
        android:visibility="gone"
        android:background="@color/Unify_N50" />

    <LinearLayout
        android:foreground="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/best_seller_info_content"
            tools:text="Terlaris #1 di Cleanser Wajah"
            app:typographyType="body_3"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/unify_space_16"
            android:layout_marginBottom="@dimen/unify_space_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.tokopedia.iconunify.IconUnify
            app:icon_name="CHEVRON_RIGHT"
            app:icon_color_light_enable="@color/Unify_N700"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:id="@+id/bottom_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        tools:visibility="visible"
        android:visibility="gone"
        android:background="@color/Unify_N50" />
</LinearLayout>