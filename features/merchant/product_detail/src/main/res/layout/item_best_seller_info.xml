<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/best_seller_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <View
        android:id="@+id/top_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        tools:visibility="visible"
        android:visibility="gone"
        android:background="@color/Unify_N50" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:foreground="?selectableItemBackground"
        android:layout_marginBottom="@dimen/unify_space_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/best_seller_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Terlaris #1"
            android:gravity="center"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.tokopedia.unifyprinciples.Typography
            app:layout_constraintStart_toEndOf="@id/best_seller_info_title"
            app:layout_constraintTop_toTopOf="@id/best_seller_info_title"
            android:gravity="center"
            android:id="@+id/best_seller_info_description"
            tools:text="di Cleanser Wajah"
            app:typographyType="body_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.tokopedia.iconunify.IconUnify
            app:layout_constraintStart_toEndOf="@id/best_seller_info_description"
            app:layout_constraintTop_toTopOf="@id/best_seller_info_description"
            app:layout_constraintBottom_toBottomOf="@id/best_seller_info_description"
            app:icon_name="CHEVRON_RIGHT"
            app:icon_color_light_enable="@color/Unify_N700"
            android:layout_marginStart="@dimen/unify_space_8"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bottom_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        tools:visibility="visible"
        android:visibility="gone"
        android:background="@color/Unify_N50" />
</LinearLayout>