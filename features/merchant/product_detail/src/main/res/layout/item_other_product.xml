<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="153dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_product_list"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <com.tokopedia.design.image.SquareImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_official"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:lines="2"
        app:fontSize="micro"
        app:textViewTheme="lightPrimary"
        tools:text="Barang Mewah"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/orange_red"
        app:fontSize="micro"/>
</LinearLayout>

