<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_view_most_helpful_review"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16"
    android:background="@drawable/bg_bottom_shadow_top_line"
    android:visibility="gone"
    tools:visibility="visible">

    <com.tokopedia.design.component.TextViewCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_most_helpful_review"
        app:fontSize="title"
        app:textViewTheme="lightPrimary"
        app:weight="medium"/>

    <com.tokopedia.abstraction.base.view.widget.TouchViewPager
        android:id="@+id/review_viewpager"
        android:layout_width="@dimen/dp_340"
        android:layout_height="@dimen/dp_240"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"/>

    <com.tokopedia.design.viewpagerindicator.CirclePageIndicator
        android:id="@+id/review_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        app:fillColor="@color/tkpd_main_green"
        app:pageColor="@color/white"/>

    <View android:background="@color/grey_300"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_see_all_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:gravity="end"
        android:textColor="@color/tkpd_main_green"
        android:lineSpacingExtra="@dimen/sp_8"
        tools:text="@string/label_see_all_review"
        app:fontSize="small"
        android:layout_marginBottom="@dimen/dp_8"/>

</LinearLayout>