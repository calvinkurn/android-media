<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/product_bundling_image_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/product_bundling_icon_add_1"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/product_bundling_icon_add_1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="20dp"
            app:icon_color_light_enable="@color/Unify_NN500"
            app:icon_name="ADD"
            app:layout_constraintBottom_toBottomOf="@id/product_bundling_image_1"
            app:layout_constraintLeft_toRightOf="@id/product_bundling_image_1"
            app:layout_constraintRight_toLeftOf="@id/product_bundling_image_2"
            app:layout_constraintTop_toTopOf="@id/product_bundling_image_1" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/product_bundling_image_2"
            android:layout_width="80dp"
            android:scaleType="fitCenter"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@id/product_bundling_image_1"
            app:layout_constraintLeft_toRightOf="@id/product_bundling_icon_add_1"
            app:layout_constraintRight_toLeftOf="@id/product_bundling_icon_add_2"
            app:layout_constraintTop_toTopOf="@id/product_bundling_image_1"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/product_bundling_icon_add_2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="20dp"
            app:icon_color_light_enable="@color/Unify_NN500"
            app:icon_name="ADD"
            app:layout_constraintBottom_toBottomOf="@id/product_bundling_icon_add_1"
            app:layout_constraintLeft_toRightOf="@id/product_bundling_image_2"
            app:layout_constraintRight_toLeftOf="@id/product_bundling_image_3"
            app:layout_constraintTop_toTopOf="@id/product_bundling_icon_add_1" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/product_bundling_image_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="@dimen/dp_30"
            app:layout_constraintBottom_toBottomOf="@id/product_bundling_image_1"
            app:layout_constraintLeft_toRightOf="@id/product_bundling_icon_add_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_bundling_image_1"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_bundling_price_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxWidth="80dp"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="@id/product_bundling_image_1"
            app:layout_constraintRight_toRightOf="@id/product_bundling_image_1"
            app:layout_constraintTop_toBottomOf="@id/product_bundling_image_1"
            app:typographyType="display_3"
            tools:text="Rp7.899.000" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/product_bundling_discount_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintLeft_toLeftOf="@id/product_bundling_price_1"
            app:layout_constraintRight_toLeftOf="@id/product_bundling_slash_1"
            app:layout_constraintTop_toBottomOf="@id/product_bundling_price_1"
            tools:text="10%"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_bundling_slash_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_60"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/product_bundling_discount_1"
            app:layout_constraintLeft_toRightOf="@id/product_bundling_discount_1"
            app:layout_constraintRight_toRightOf="@id/product_bundling_price_1"
            app:layout_constraintTop_toTopOf="@id/product_bundling_discount_1"
            app:typographyType="small"
            tools:text="Rp8.100.000"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_bundling_price_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxWidth="80dp"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="@id/product_bundling_image_2"
            app:layout_constraintRight_toRightOf="@id/product_bundling_image_2"
            app:layout_constraintTop_toBottomOf="@id/product_bundling_image_2"
            app:typographyType="display_3"
            tools:text="Rp95.000" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/product_bundling_discount_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintLeft_toLeftOf="@id/product_bundling_price_2"
            app:layout_constraintRight_toLeftOf="@id/product_bundling_slash_2"
            app:layout_constraintTop_toBottomOf="@id/product_bundling_price_2"
            tools:text="15%"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_bundling_slash_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_60"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/product_bundling_discount_2"
            app:layout_constraintLeft_toRightOf="@id/product_bundling_discount_2"
            app:layout_constraintRight_toRightOf="@id/product_bundling_price_2"
            app:layout_constraintTop_toTopOf="@id/product_bundling_discount_2"
            app:typographyType="small"
            tools:text="Rp.150.000"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_bundling_price_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxWidth="80dp"
            android:maxLines="1"
            app:layout_constraintLeft_toLeftOf="@id/product_bundling_image_3"
            app:layout_constraintRight_toRightOf="@id/product_bundling_image_3"
            app:layout_constraintTop_toBottomOf="@id/product_bundling_image_3"
            app:typographyType="display_3"
            tools:text="Rp215.000" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/product_bundling_discount_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintLeft_toLeftOf="@id/product_bundling_price_3"
            app:layout_constraintRight_toLeftOf="@id/product_bundling_slash_3"
            app:layout_constraintTop_toBottomOf="@id/product_bundling_price_3"
            tools:text="15%"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_bundling_slash_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_60"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/product_bundling_discount_3"
            app:layout_constraintLeft_toRightOf="@id/product_bundling_discount_3"
            app:layout_constraintRight_toRightOf="@id/product_bundling_price_3"
            app:layout_constraintTop_toTopOf="@id/product_bundling_discount_3"
            app:typographyType="small"
            tools:text="Rp250.000"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</HorizontalScrollView>