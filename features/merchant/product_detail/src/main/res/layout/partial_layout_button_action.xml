<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_btn_action"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow_top">

    <FrameLayout
        android:id="@+id/btn_buy_now"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/bg_rounded_orange_red_outline"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_to_cart"
        app:layout_constraintLeft_toRightOf="@+id/btn_topchat"
        app:layout_constraintRight_toLeftOf="@+id/btn_add_to_cart"
        app:layout_constraintStart_toEndOf="@+id/btn_topchat"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/pb_buy_now"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/orange_red"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="@string/buy_now"
            android:textColor="@color/orange_red"
            app:fontSize="micro" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn_add_to_cart"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/bg_btn_add_to_cart"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_buy_now"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_buy_now"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/pb_add_to_cart"
            style="?android:progressBarStyleInverse"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.tokopedia.design.component.TextViewCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="@string/add_product_to_cart"
            app:fontSize="micro"
            app:textViewTheme="darkPrimary" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/btn_buy"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/orange_red"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_promote_topads"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_promote_topads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/variant_progress_bar"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:gravity="center"
            android:text="@string/buy"
            android:textColor="@color/color_href_link"
            app:fontSize="title"
            app:weight="medium" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container_btn_promote_topads"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        tools:visibility="visible"
        android:visibility="gone"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_buy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_buy"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/btn_promote_topads"
            style="@style/BtnTopAdsPDPIklankan"
            android:text="@string/promote_topads"
            app:fontSize="title" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_byme"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/white_button_rounded"
        android:padding="@dimen/dp_4"
        android:scaleType="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_topchat"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_topchat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_byme" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_topchat"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/white_button_rounded"
        android:padding="@dimen/dp_4"
        android:scaleType="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_buy_now"
        app:layout_constraintLeft_toRightOf="@+id/btn_byme"
        app:layout_constraintRight_toLeftOf="@+id/btn_buy_now"
        app:layout_constraintStart_toEndOf="@+id/btn_byme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="@dimen/dp_16"
        app:layout_goneMarginStart="@dimen/dp_16"
        app:srcCompat="@drawable/ic_topchat" />

</androidx.constraintlayout.widget.ConstraintLayout>