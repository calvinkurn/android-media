<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_btn_action"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow_top">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_byme"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/white_button_rounded"
        android:padding="@dimen/dp_4"
        android:scaleType="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_topchat"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_topchat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_byme"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_topchat"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/white_button_rounded"
        android:padding="@dimen/dp_4"
        android:scaleType="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_buy_now"
        app:layout_constraintLeft_toRightOf="@+id/btn_byme"
        app:layout_constraintRight_toLeftOf="@+id/btn_buy_now"
        app:layout_constraintStart_toEndOf="@+id/btn_byme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="@dimen/dp_16"
        app:layout_goneMarginStart="@dimen/dp_16"
        app:srcCompat="@drawable/ic_topchat"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/btn_buy_now"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/bg_rounded_orange_red_outline"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_to_cart"
        app:layout_constraintLeft_toRightOf="@+id/btn_topchat"
        app:layout_constraintRight_toLeftOf="@+id/btn_add_to_cart"
        app:layout_constraintStart_toEndOf="@+id/btn_topchat"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="@string/buy_now"
            android:textColor="@color/orange_red"
            android:textStyle="bold"
            app:fontSize="micro" />

        <ProgressBar
            android:id="@+id/pb_buy_now"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/orange_red"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn_add_to_cart"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/bg_btn_add_to_cart"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_buy_now"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_buy_now"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.tokopedia.design.component.TextViewCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:text="@string/add_product_to_cart"
            android:textStyle="bold"
            app:fontSize="micro"
            app:textViewTheme="darkPrimary" />

        <ProgressBar
            android:id="@+id/pb_add_to_cart"
            style="?android:progressBarStyleInverse"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn_apply_leasing"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_8"
        android:gravity="center"
        android:text="@string/apply_credit"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        app:buttonCompatSize="big"
        app:buttonCompatType="transaction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_topchat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_topchat"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn_top_ads"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/promote_topads"
        android:textStyle="bold"
        tools:visibility="gone"
        android:visibility="gone"
        app:buttonCompatSize="big"
        app:buttonCompatType="primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn_empty_stock"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_8"
        android:gravity="center"
        android:text="@string/no_stock"
        android:textStyle="bold"
        tools:visibility="gone"
        android:visibility="gone"
        app:buttonCompatSize="big"
        app:buttonCompatType="primary_disabled"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>