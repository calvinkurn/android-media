<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_24"
    android:visibility="gone"
    android:background="@color/white"
    tools:visibility="visible"
    android:id="@+id/base_info_and_description">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/title_product_info_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_product_info"
        app:fontSize="title"
        app:weight="medium"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/title_product_info_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/separator_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_16"
        android:background="#f3f4f5"
        app:layout_constraintTop_toBottomOf="@+id/rv_info"
        />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/title_product_desc_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_product_desc"
        app:fontSize="title"
        app:weight="medium"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator_desc"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/youtube_scroll"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_16"
        android:transitionName="@string/transition_video_horizontal_scroll"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_product_desc_label"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_product_descr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_product_desc"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:autoLink="all"
        android:ellipsize="end"
        android:longClickable="false"
        android:maxLines="@integer/default_description_lines"
        android:transitionName="@string/transition_description"
        android:textIsSelectable="false"
        android:lineSpacingExtra="@dimen/sp_8"
        tools:text="Pilihan tepat untuk dekorasi rumah minimalis modern Anda, atau untuk mengimbangi interior unik pilihan Anda. Tersedia dalam 4 pilihan warna, hitam, putih, biru, dan jingga. .."
        app:fontSize="small"
        app:textViewTheme="lightSecondary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youtube_scroll"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/label_see_detail_product_descr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/sp_8"
        android:text="@string/label_read_detail"
        android:textColor="@color/tkpd_main_green"
        app:fontSize="small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_product_descr"/>

</androidx.constraintlayout.widget.ConstraintLayout>