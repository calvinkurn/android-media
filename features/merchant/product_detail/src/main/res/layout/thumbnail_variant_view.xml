<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pdp_thumbnail_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/variant_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:card_type="border"
        app:card_enable_check_icon="false"
        android:background="@color/cardunify_background"
        android:padding="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/variant_thumbnail"
                android:layout_width="62dp"
                android:layout_height="63dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toTopOf="@+id/variant_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unify_image_corner_radius="0"
                tools:src="@tools:sample/avatars" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/variant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:typographyType="small"
                tools:text="Kelinci Hijau" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify2>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/variant_promo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_promo"
        android:layout_gravity="top|end"
        android:layout_marginEnd="2dp"
        tools:visibility="visible"/>
</FrameLayout>