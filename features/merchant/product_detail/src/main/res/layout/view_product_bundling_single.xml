<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/product_bundling_single_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="1dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_image_outline"
        app:layout_constraintBottom_toBottomOf="@id/product_bundling_single_image"
        app:layout_constraintEnd_toEndOf="@id/product_bundling_single_image"
        app:layout_constraintStart_toStartOf="@id/product_bundling_single_image"
        app:layout_constraintTop_toTopOf="@id/product_bundling_single_image" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/product_bundling_single_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:labelType="general_light_green"
        app:layout_constraintLeft_toRightOf="@id/product_bundling_single_image"
        app:layout_constraintTop_toTopOf="@id/product_bundling_single_image"
        tools:text="Paket isi 3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_single_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintLeft_toLeftOf="@id/product_bundling_single_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_bundling_single_label"
        app:typographyType="display_3"
        tools:text="Womenâ€™s Breathable Low-cut Short Socks Cotton Blend Ankle Candy" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_single_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/product_bundling_single_name"
        app:layout_constraintTop_toBottomOf="@id/product_bundling_single_name"
        app:typographyType="display_3"
        tools:text="Rp36.000" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/product_bundling_single_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        app:labelType="general_light_red"
        app:layout_constraintBottom_toBottomOf="@id/product_bundling_single_price"
        app:layout_constraintLeft_toRightOf="@id/product_bundling_single_price"
        app:layout_constraintTop_toTopOf="@id/product_bundling_single_price"
        tools:text="10%"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_single_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/Unify_NN400"
        app:layout_constraintBottom_toBottomOf="@id/product_bundling_single_discount"
        app:layout_constraintLeft_toRightOf="@id/product_bundling_single_discount"
        app:layout_constraintTop_toTopOf="@id/product_bundling_single_discount"
        app:typographyType="small"
        tools:text="Rp40.000" />

</androidx.constraintlayout.widget.ConstraintLayout>