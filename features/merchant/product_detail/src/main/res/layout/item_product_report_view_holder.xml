<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_16">

    <View
        android:id="@+id/product_report_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/Unify_N50"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/product_report_ic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:icon_name="INFORMATION"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_report_divider" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_report_txt"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/product_report_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_report_ic"
        app:layout_constraintTop_toTopOf="@id/product_report_ic"
        app:typographyType="body_3"
        tools:text="Produk bermasalah? Laporkan" />

</androidx.constraintlayout.widget.ConstraintLayout>