<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="16dp">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/product_report_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_component"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/product_report_ic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:icon_name="ERROR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_report_divider" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_report_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/product_report_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/product_report_ic"
        app:layout_constraintTop_toTopOf="@id/product_report_ic"
        app:typographyType="display_2"
        tools:text="Produk bermasalah? Laporkan" />

</androidx.constraintlayout.widget.ConstraintLayout>