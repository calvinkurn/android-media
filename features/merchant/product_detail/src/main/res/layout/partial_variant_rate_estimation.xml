<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_variant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_shadow_top_line"
    android:paddingStart="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_22"
    android:visibility="gone"
    tools:ignore="RtlSymmetry"
    tools:visibility="visible">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/label_variant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/sp_8"
        android:text="@string/label_product_variant"
        android:visibility="gone"
        app:fontSize="small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/label_choose_variant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/sp_6"
        android:text="@string/label_choose_product_variant"
        android:textColor="@color/tkpd_main_green"
        android:visibility="gone"
        app:fontSize="small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_variant"
        tools:visibility="visible" />

    <View
        android:id="@+id/variant_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_half"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_300"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_choose_variant"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_rate_estimation_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/sp_8"
        android:visibility="gone"
        app:fontSize="small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/variant_divider"
        app:layout_goneMarginTop="0dp"
        tools:text="Ongkir mulai dari Rp 12.000"
        tools:visibility="visible" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_shop_location"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_rate_estimation_start"
        app:srcCompat="@drawable/ic_shop_location"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_shop_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"
        app:fontSize="micro"
        app:layout_constraintBottom_toBottomOf="@+id/icon_shop_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/icon_shop_location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_shop_location"
        app:layout_constraintTop_toTopOf="@+id/icon_shop_location"
        tools:text="dari Kota Depok"
        tools:visibility="visible" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_courier_est"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_6"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/icon_shop_location"
        app:layout_constraintLeft_toLeftOf="@+id/icon_shop_location"
        app:layout_constraintRight_toRightOf="@+id/icon_shop_location"
        app:layout_constraintStart_toStartOf="@+id/icon_shop_location"
        app:layout_constraintTop_toBottomOf="@+id/icon_shop_location"
        app:srcCompat="@drawable/ic_courier_grey"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_courier_dest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/tkpd_main_green"
        android:visibility="gone"
        app:fontSize="micro"
        app:layout_constraintBottom_toBottomOf="@+id/icon_courier_est"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/txt_shop_location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_shop_location"
        app:layout_constraintTop_toTopOf="@+id/icon_courier_est"
        tools:text="ke Kab. Bolaang Mongondow Selatan"
        tools:visibility="visible" />

    <View
        android:id="@+id/purchase_protection_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_half"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_300"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_courier_est"
        tools:visibility="visible" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_purchase_protection"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchase_protection_divider"
        app:srcCompat="@drawable/ic_pdp_purchase_protection"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_purchase_protection_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/purchase_protection_label"
        android:visibility="gone"
        app:fontSize="small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/icon_purchase_protection"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_purchase_protection"
        app:layout_constraintTop_toTopOf="@+id/icon_purchase_protection"
        app:weight="medium"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_purchase_protection_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:fontSize="micro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_purchase_protection_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/txt_purchase_protection_title"
        app:layout_constraintRight_toRightOf="@+id/txt_purchase_protection_title"
        app:layout_constraintStart_toStartOf="@+id/txt_purchase_protection_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_purchase_protection_title"
        app:layout_constraintVertical_bias="0.053"
        tools:text="dari Kota Depok"
        tools:visibility="visible" />


    <View
        android:id="@+id/priority_order_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_half"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/grey_300"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_purchase_protection_message"
        tools:visibility="visible" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_priority_order"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priority_order_divider"
        app:srcCompat="@drawable/ic_pdp_order_prioritas"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_priority_order_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/priority_order_label"
        android:visibility="gone"
        app:fontSize="small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/icon_priority_order"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_priority_order"
        app:layout_constraintTop_toTopOf="@+id/icon_priority_order"
        app:weight="medium"
        tools:visibility="visible" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_priority_order_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:fontSize="micro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_priority_order_title"
        app:layout_constraintLeft_toLeftOf="@+id/txt_priority_order_title"
        app:layout_constraintRight_toRightOf="@+id/txt_priority_order_title"
        app:layout_constraintStart_toStartOf="@+id/txt_priority_order_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_priority_order_title"
        tools:text="dari Kota Depok"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>