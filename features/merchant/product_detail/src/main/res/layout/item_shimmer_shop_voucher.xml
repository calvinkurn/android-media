<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_shop_voucher_container"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/merchant_shimmer_ic_1"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        app:corners="100"
        app:layout_constraintEnd_toStartOf="@+id/merchant_shimmer_txt_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/merchant_shimmer_txt_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/merchant_shimmer_ic_2"
        app:layout_constraintStart_toEndOf="@+id/merchant_shimmer_ic_1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/merchant_shimmer_ic_2"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginStart="16dp"
        app:corners="100"
        app:layout_constraintEnd_toStartOf="@id/merchant_shimmer_txt_2"
        app:layout_constraintStart_toEndOf="@+id/merchant_shimmer_txt_1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/merchant_shimmer_txt_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:gravity="center"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/merchant_shimmer_ic_2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>