<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_lvl2"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_most_helpful_shimmer_title"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_most_helpful_shimmer_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_most_helpful_shimmer_title"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_most_helpful_shimmer_content"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl8"
        android:layout_marginRight="@dimen/layout_lvl8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_most_helpful_shimmer_subtitle" />
    
    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/product_detail_discussion_most_helpful_shimmer_profile_picture"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_most_helpful_shimmer_content"/>
    
    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_most_helpful_shimmer_user_name"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        app:layout_constraintTop_toTopOf="@id/product_detail_discussion_most_helpful_shimmer_profile_picture"
        app:layout_constraintStart_toEndOf="@id/product_detail_discussion_most_helpful_shimmer_profile_picture" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_most_helpful_shimmer_answer"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_most_helpful_shimmer_user_name"
        app:layout_constraintStart_toStartOf="@id/product_detail_discussion_most_helpful_shimmer_user_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_most_helpful_shimmer_attached_product"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl9"
        android:layout_marginRight="@dimen/layout_lvl9"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_most_helpful_shimmer_answer"
        app:layout_constraintStart_toStartOf="@id/product_detail_discussion_most_helpful_shimmer_user_name"
        app:layout_constraintEnd_toEndOf="parent" />
    
</androidx.constraintlayout.widget.ConstraintLayout>