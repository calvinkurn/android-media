<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_shimmer_title"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/product_detail_discussion_shimmer_inquirer_profile_picture"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_shimmer_title"
        app:layout_constraintStart_toStartOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_shimmer_inquirer_info"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        app:layout_constraintTop_toTopOf="@id/product_detail_discussion_shimmer_inquirer_profile_picture"
        app:layout_constraintBottom_toBottomOf="@id/product_detail_discussion_shimmer_inquirer_profile_picture"
        app:layout_constraintStart_toEndOf="@id/product_detail_discussion_shimmer_inquirer_profile_picture" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_shimmer_question"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_shimmer_inquirer_profile_picture" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_shimmer_question_2"
        android:layout_width="@dimen/dp_204"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:layout_constraintStart_toStartOf="@id/product_detail_discussion_shimmer_question"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_shimmer_question" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_shimmer_bar"
        android:layout_width="@dimen/spacing_lvl1"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_shimmer_question_2"
        app:layout_constraintBottom_toBottomOf="@id/product_detail_discussion_shimmer_respondent_answer"
        app:layout_constraintStart_toStartOf="@id/product_detail_discussion_shimmer_inquirer_profile_picture"
        app:layout_constraintEnd_toEndOf="@id/product_detail_discussion_shimmer_inquirer_profile_picture"/>

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/product_detail_discussion_shimmer_respondent_profile_picture"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="@id/product_detail_discussion_shimmer_bar"
        app:layout_constraintStart_toEndOf="@id/product_detail_discussion_shimmer_bar" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_shimmer_respondent_info"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        app:layout_constraintTop_toTopOf="@id/product_detail_discussion_shimmer_respondent_profile_picture"
        app:layout_constraintBottom_toBottomOf="@id/product_detail_discussion_shimmer_respondent_profile_picture"
        app:layout_constraintStart_toEndOf="@id/product_detail_discussion_shimmer_respondent_profile_picture" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/product_detail_discussion_shimmer_respondent_answer"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:layout_constraintStart_toEndOf="@id/product_detail_discussion_shimmer_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_shimmer_respondent_profile_picture" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/product_detail_discussion_shimmer_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/product_detail_discussion_shimmer_respondent_answer" />

</androidx.constraintlayout.widget.ConstraintLayout>