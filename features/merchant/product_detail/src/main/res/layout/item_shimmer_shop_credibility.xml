<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/shop_credibility_shimmering"
    android:padding="@dimen/dp_16"
    android:layout_height="match_parent">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_shop_credibility_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:width_weight="0.7" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_shop_credibility_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_shop_credibility_title"
        app:width_weight="0.6" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_shop_item_title1"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_27"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_shop_item_title2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_shop_credibility_desc" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_shop_item_title2"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_shop_item_title3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shimmer_shop_item_title1"
        app:layout_constraintTop_toTopOf="@+id/shimmer_shop_item_title1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_shop_item_title3"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shimmer_shop_item_title2"
        app:layout_constraintTop_toTopOf="@+id/shimmer_shop_item_title1" />


    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_shop_item_desc1"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_shop_item_title1"
        app:layout_constraintStart_toStartOf="@+id/shimmer_shop_item_title1"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_shop_item_title1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_shop_item_desc2"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_shop_item_title2"
        app:layout_constraintStart_toStartOf="@+id/shimmer_shop_item_title2"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_shop_item_title2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_shop_item_desc3"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_shop_item_title3"
        app:layout_constraintStart_toStartOf="@+id/shimmer_shop_item_title3"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_shop_item_title3" />

</androidx.constraintlayout.widget.ConstraintLayout>