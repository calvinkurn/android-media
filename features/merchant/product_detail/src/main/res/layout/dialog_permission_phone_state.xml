<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ask_phone_state_title"
        android:textAlignment="center"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        android:gravity="center_horizontal" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/ask_phone_state_rationale"
        android:textAlignment="center"
        app:typographyType="body_2"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        android:gravity="center_horizontal" />

</LinearLayout>