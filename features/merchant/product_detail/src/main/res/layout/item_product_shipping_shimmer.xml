<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shipment_shimmer_1"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        app:layout_constraintEnd_toStartOf="@+id/shipment_shimmer_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_shimmer_2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/shipment_shimmer_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shipment_shimmer_1"
        app:layout_constraintTop_toTopOf="parent"
        app:width_weight="0.5" />

    <View
        android:id="@+id/shipment_shimmer_divider_1"
        android:layout_width="@dimen/spacing_lvl1"
        android:layout_height="@dimen/spacing_lvl3"
        android:background="@color/Unify_N75"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/shipment_shimmer_1"
        app:layout_constraintStart_toStartOf="@+id/shipment_shimmer_1"
        app:layout_constraintEnd_toEndOf="@+id/shipment_shimmer_1"/>

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shipment_shimmer_3"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@+id/shipment_shimmer_4"
        app:layout_constraintTop_toBottomOf="@+id/shipment_shimmer_divider_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_shimmer_4"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/shipment_shimmer_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shipment_shimmer_3"
        app:width_weight="0.7" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_service_title_1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/shipment_shimmer_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:width_weight="0.3" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_product_title_1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toBottomOf="@+id/shipment_service_title_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        app:width_weight="0.4" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_product_eta_1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toBottomOf="@+id/shipment_product_title_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        app:width_weight="0.5" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_product_price_1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toTopOf="@+id/shipment_product_eta_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/shipment_product_eta_1"/>

    <View
        android:id="@+id/shipment_shimmer_divider_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Unify_N75"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/shipment_product_eta_1"
        app:layout_constraintStart_toStartOf="@+id/shipment_product_eta_1"
        app:layout_constraintEnd_toEndOf="@+id/shipment_product_eta_1"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_service_title_2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/shipment_shimmer_divider_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:width_weight="0.3" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_product_title_2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toBottomOf="@+id/shipment_service_title_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        app:width_weight="0.4" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_product_eta_2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toBottomOf="@+id/shipment_product_title_2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        app:width_weight="0.5" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_product_price_2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toTopOf="@+id/shipment_product_eta_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/shipment_product_eta_2"/>

    <View
        android:id="@+id/shipment_shimmer_divider_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Unify_N75"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/shipment_product_eta_2"
        app:layout_constraintStart_toStartOf="@+id/shipment_product_eta_2"
        app:layout_constraintEnd_toEndOf="@+id/shipment_product_eta_2"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_service_title_3"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/shipment_shimmer_divider_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:width_weight="0.3" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_product_title_3"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toBottomOf="@+id/shipment_service_title_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        app:width_weight="0.4" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_product_eta_3"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toBottomOf="@+id/shipment_product_title_3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        app:width_weight="0.5" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shipment_product_price_3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toTopOf="@+id/shipment_product_eta_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/shipment_product_eta_3"/>


</androidx.constraintlayout.widget.ConstraintLayout>