<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_title_bs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:typographyType="heading_3"
            tools:text="Garansi Harga Termurah" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_desc_bs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            app:typographyType="body_2"
            tools:text="Dapatkan harga termurah di Official Store Tokopedia. Kami akan ganti 2x selisih harga jika kamu menemukan yang lebih murah di Official Store platform lain." />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/learn_more_btn_bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/value_proposition_learn_more"
            android:textColor="@color/tkpd_main_green"
            app:typographyType="body_2"
            app:typographyWeight="bold" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>