<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:visibility="gone">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/productDetailDiscussionEmptyImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="productDetailDiscussionEmptyImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pdp_discuss_empty"
        tools:ignore="HardcodedText" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_detail_discussion_empty_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/product_detail_discussion_empty_description"
        app:layout_constraintBottom_toBottomOf="@id/productDetailDiscussionEmptyImage"
        app:layout_constraintEnd_toEndOf="@id/productDetailDiscussionEmptyButton"
        app:layout_constraintStart_toEndOf="@id/productDetailDiscussionEmptyImage"
        app:layout_constraintTop_toTopOf="@id/productDetailDiscussionEmptyImage"
        app:typographyType="display_2" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/productDetailDiscussionEmptyButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="@id/productDetailDiscussionEmptyImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/productDetailDiscussionEmptyImage" />
</androidx.constraintlayout.widget.ConstraintLayout>