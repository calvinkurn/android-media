<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingRight="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/pdp_check_imei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:id="@+id/typography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_imei_title"
        android:textAlignment="center"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        android:gravity="center_horizontal" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:text="@string/check_imei_description"
        android:textAlignment="center"
        app:typographyType="body_2"
        android:gravity="center_horizontal" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:id="@+id/dialog_check_imei_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_imei_understand_title" />

</LinearLayout>