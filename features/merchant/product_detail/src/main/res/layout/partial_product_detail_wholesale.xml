<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_view_wholesale"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_20"
    android:background="@drawable/bg_bottom_shadow_top_line"
    android:visibility="gone"
    tools:visibility="visible"
    tools:ignore="RtlSymmetry">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/label_wholesale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_product_wholesale"
        android:lineSpacingExtra="@dimen/sp_8"
        android:visibility="gone"
        tools:visibility="visible"
        app:fontSize="small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/label_min_wholesale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/label_choose_product_variant"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="@color/tkpd_main_green"
        android:visibility="gone"
        tools:visibility="visible"
        app:fontSize="small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_wholesale"/>

    <View android:id="@+id/wholesale_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_half"
        android:background="@color/grey_300"
        android:layout_marginTop="@dimen/dp_14"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_min_wholesale"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/label_installment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_product_installment"
        android:layout_marginTop="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/sp_8"
        android:visibility="gone"
        app:fontSize="small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wholesale_divider"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_ovo_installment_icon"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/label_desc_installment"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_next"
        app:layout_constraintTop_toTopOf="@+id/label_installment"
        app:srcCompat="@drawable/ft_ovo_pay_later" />


    <ImageView
        android:id="@+id/iv_arrow_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/label_desc_installment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/label_installment"
        app:srcCompat="@drawable/ic_arrow_right_grey" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/label_desc_installment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textColor="@color/tkpd_main_green"
        android:visibility="gone"
        app:fontSize="small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_installment"
        tools:text="@string/label_choose_product_variant"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>