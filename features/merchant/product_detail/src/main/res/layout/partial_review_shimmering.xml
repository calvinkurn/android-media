<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_header"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="12dp"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/review_shimmer_image_3"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_subheader"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        app:layout_constraintStart_toStartOf="@id/review_shimmer_header"
        app:layout_constraintTop_toBottomOf="@id/review_shimmer_header"
        app:layout_constraintEnd_toEndOf="@id/review_shimmer_image_3"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="12dp"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/review_shimmer_header"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_image"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/review_shimmer_subheader"
        app:layout_constraintStart_toStartOf="parent"
        app:loader_corner_radius="6dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_image_2"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="@id/review_shimmer_image"
        app:layout_constraintStart_toEndOf="@id/review_shimmer_image"
        app:loader_corner_radius="6dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_image_3"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="@id/review_shimmer_image"
        app:layout_constraintStart_toEndOf="@id/review_shimmer_image_2"
        app:layout_constraintEnd_toStartOf="@id/review_shimmer_image_4"
        app:loader_corner_radius="6dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_image_4"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:layout_constraintEnd_toStartOf="@id/review_shimmer_image_5"
        app:layout_constraintTop_toTopOf="@id/review_shimmer_image"
        app:loader_corner_radius="6dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_image_5"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="@id/review_shimmer_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:loader_corner_radius="6dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_description"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        app:layout_constraintStart_toStartOf="@id/review_shimmer_header"
        app:layout_constraintEnd_toEndOf="@id/review_shimmer_image_3"
        app:layout_constraintTop_toBottomOf="@id/review_shimmer_image"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_description_1"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:layout_constraintStart_toStartOf="@id/review_shimmer_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_shimmer_description"
        app:loader_corner_radius="10dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_shimmer_description_2"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:layout_constraintStart_toStartOf="@id/review_shimmer_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_shimmer_description_1"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:layout_constraintStart_toStartOf="@id/review_shimmer_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_shimmer_description_2"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

</androidx.constraintlayout.widget.ConstraintLayout>