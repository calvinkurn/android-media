<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pdp_shimmering_social_proof"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_txt_1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_16"
        android:visibility="visible"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toStartOf="@+id/separator_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separator_1"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="#E5E7E9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loader_txt_2"
        app:layout_constraintStart_toEndOf="@+id/loader_txt_1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_txt_2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:visibility="visible"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toStartOf="@+id/separator_2"
        app:layout_constraintStart_toEndOf="@+id/separator_1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separator_2"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:background="#E5E7E9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loader_txt_3"
        app:layout_constraintStart_toEndOf="@+id/loader_txt_2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_txt_3"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_8"
        android:visibility="visible"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator_2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp_8" />

</androidx.constraintlayout.widget.ConstraintLayout>