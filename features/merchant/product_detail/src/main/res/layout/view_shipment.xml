<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/pdp_shipment_title_strike"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/pdp_shipment_guidelines_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        app:layout_goneMarginEnd="2dp"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        tools:text="Ongkir cuma Rp10.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_title_strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:textColor="@color/Unify_NN400"
        app:layout_constraintBottom_toBottomOf="@id/pdp_shipment_title"
        app:layout_constraintEnd_toStartOf="@id/pdp_shipment_icon"
        app:layout_constraintStart_toEndOf="@id/pdp_shipment_title"
        app:layout_constraintTop_toTopOf="@id/pdp_shipment_title"
        app:typographyType="display_3"
        tools:text="Rp30.000" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/pdp_shipment_icon"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/pdp_shipment_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pdp_shipment_title"
        app:unify_image_corner_radius="0"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@id/pdp_shipment_guidelines_end"
        app:layout_constraintStart_toStartOf="@id/pdp_shipment_guidelines_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_title"
        app:typographyType="display_3"
        tools:text="Min. belanja Rp50.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_tc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/pdp_shipping_dilayani_label"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintLeft_toLeftOf="@id/pdp_shipment_guidelines_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_subtitle"
        app:typographyType="display_3" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/pdp_shipment_tc_icon"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/pdp_shipment_tc_label"
        app:layout_constraintLeft_toRightOf="@id/pdp_shipment_tc_label"
        app:layout_constraintTop_toTopOf="@id/pdp_shipment_tc_label"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_tc_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/pdp_tokocabang_label"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@id/pdp_shipment_tc_label"
        app:layout_constraintLeft_toRightOf="@id/pdp_shipment_tc_icon"
        app:typographyType="display_3" />

    <View
        android:id="@+id/pdp_shipment_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintEnd_toEndOf="@id/pdp_shipment_guidelines_end"
        app:layout_constraintStart_toStartOf="@id/pdp_shipment_guidelines_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_barrier_header"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@id/pdp_shipment_guidelines_end"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/pdp_shipment_guidelines_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_line"
        app:typographyType="display_3"
        tools:text="Dikirim ke Kantor Jamika Nasaputra" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_estimation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="@id/pdp_shipment_guidelines_end"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/pdp_shipment_guidelines_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_destination"
        app:layout_goneMarginTop="12dp"
        app:typographyType="display_3"
        tools:text="Estimasi tiba 20 - 21 Nov" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_courier_label_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintLeft_toLeftOf="@id/pdp_shipment_guidelines_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_estimation"
        app:typographyType="display_3"
        tools:text="Kurir lainnya:" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/pdp_shipment_courier_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:flexWrap="wrap"
        app:layout_constraintEnd_toStartOf="@id/pdp_shipment_icon"
        app:layout_constraintStart_toEndOf="@id/pdp_shipment_courier_label_1"
        app:layout_constraintTop_toTopOf="@id/pdp_shipment_courier_label_1" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/pdp_shipment_courier_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="@id/pdp_shipment_courier_label_1"
        app:layout_constraintRight_toRightOf="@id/pdp_shipment_guidelines_end"
        app:layout_constraintTop_toTopOf="@id/pdp_shipment_courier_label_1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_courier_label_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintEnd_toEndOf="@id/pdp_shipment_guidelines_end"
        app:layout_constraintStart_toStartOf="@id/pdp_shipment_guidelines_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_courier_label_1"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Lihat Pilihan Kurir" />

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/pdp_shipment_ticker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        app:closeButtonVisibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_courier_label_2"
        app:tickerShapeType="loose"
        app:tickerType="announcement"
        tools:descriptionText="Maaf, pengiriman terjadwal belum tersedia untuk beberapa produk pada kategori ini."
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.TipsUnify
        android:id="@+id/pdp_shipment_tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_ticker"
        app:layout_goneMarginTop="10dp"
        app:unify_tips_description="Test"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_shipment_rates_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/Unify_NN900"
        app:layout_constraintEnd_toEndOf="@id/pdp_shipment_guidelines_end"
        app:layout_constraintStart_toStartOf="@id/pdp_shipment_guidelines_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_tips"
        app:typographyType="display_3"
        tools:text="Tidak ada kurir yang mendukung pengiriman barang ini ke alamatmu. Caring barang lain atau Ganti Alamat." />

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/pdp_shipment_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:card_type="border"
        app:layout_constraintTop_toBottomOf="@id/pdp_shipment_rates_error">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/pdp_shipment_plus_background"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unify_image_corner_radius="0"
                app:unify_image_disable_shimmering_placeholder="false" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/pdp_shipment_plus_logo"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:unify_image_disable_shimmering_placeholder="false" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/pdp_shipment_plus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:textColor="@color/Unify_NN950"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/pdp_shipment_plus_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="display_3"
                tools:text="Produk ini bisa dikirim lebih cepat! Cek" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify2>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pdp_shipment_guidelines_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pdp_shipment_guidelines_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/pdp_shipment_group_tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="pdp_shipment_tc_label, pdp_shipment_tc_icon, pdp_shipment_tc_value"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/pdp_shipment_barrier_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="pdp_shipment_icon, pdp_shipment_tc_label" />

</androidx.constraintlayout.widget.ConstraintLayout>