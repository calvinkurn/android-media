<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_attachment_review"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        tools:src="@tools:sample/avatars"/>

    <FrameLayout
        android:id="@+id/overlay_see_more"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/img_attachment_review"
        app:layout_constraintLeft_toLeftOf="@+id/img_attachment_review"
        app:layout_constraintRight_toRightOf="@+id/img_attachment_review"
        app:layout_constraintBottom_toBottomOf="@+id/img_attachment_review">

        <View android:id="@+id/overlay_see_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner_transparent"

            android:visibility="visible"
            android:alpha="0.7"
            tools:visibility="visible"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_see_more"
            android:layout_width="@dimen/dp_44"
            android:layout_height="wrap_content"
            android:text="@string/label_see_all"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            tools:visibility="visible"
            app:weight="medium"
            app:fontSize="micro"
            app:textViewTheme="darkPrimary"/>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>