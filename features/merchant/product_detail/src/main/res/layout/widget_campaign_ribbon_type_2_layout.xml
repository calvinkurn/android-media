<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/campaign_ribbon_layout_s2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_default_flash_sale"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/left_margin_view"
            android:layout_width="@dimen/spacing_lvl3"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_campaign_logo_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:layout_constraintStart_toEndOf="@+id/left_margin_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_btn_play" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_name_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/pdp_dp_10"
            android:text="Harga Spesial"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintLeft_toRightOf="@id/iu_campaign_logo_s2"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            tools:ignore="MissingConstraints,RtlSymmetry" />

        <com.tokopedia.unifycomponents.ProgressBarUnify
            android:id="@+id/pbu_stock_bar_s2"
            android:layout_width="72dp"
            android:layout_height="4dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:layout_constraintLeft_toRightOf="@id/iu_campaign_logo_s2"
            app:layout_constraintTop_toBottomOf="@id/tpg_campaign_name_s2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_sold_out_wording_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:text="Terjual habis! Cek barang lainnya yuk"
            android:textColor="@color/Unify_Static_White"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/iu_campaign_logo_s2"
            app:layout_constraintTop_toBottomOf="@id/tpg_campaign_name_s2"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_stock_wording_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:text="Lagi diminati"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="@id/pbu_stock_bar_s2"
            app:layout_constraintLeft_toRightOf="@id/pbu_stock_bar_s2"
            app:layout_constraintTop_toTopOf="@id/pbu_stock_bar_s2"
            app:typographyType="small" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/transparent_asset_type_3"
            tools:ignore="MissingConstraints" />

        <com.tokopedia.design.countdown.CountDownView
            android:id="@+id/count_down_view_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/pdp_dp_10"
            android:background="@drawable/bg_countdown_rounded_white"
            app:coundDownBackgroud="@android:color/transparent"
            app:countDownSparatorColor="@color/Unify_R500"
            app:countDownTxtColor="@color/Unify_R500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="RtlSymmetry" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_count_down_wording_s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pdp_dp_10"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:text="Berakhir dalam"
            android:textColor="@color/Unify_N0"
            app:layout_constraintBottom_toTopOf="@id/count_down_view_s2"
            app:layout_constraintLeft_toLeftOf="@id/count_down_view_s2"
            app:layout_constraintRight_toRightOf="@id/count_down_view_s2"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/regulatory_info_layout_s2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_default_flash_sale"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/campaign_ribbon_layout_s2">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_regulatory_info_s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_regulatory_info_overlay"
            android:paddingStart="@dimen/spacing_lvl4"
            android:paddingTop="@dimen/spacing_lvl2"
            android:paddingBottom="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small"
            tools:text="Khusus pembayaran dengan OVO" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>