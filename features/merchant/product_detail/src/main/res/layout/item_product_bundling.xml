<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_bundling_component"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/product_bundling_separator_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/Unify_N50"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/product_bundling_icon_main"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_bundling_separator_top"
        app:srcCompat="@drawable/ic_bundle" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/product_bundling_icon_main"
        app:layout_constraintLeft_toRightOf="@id/product_bundling_icon_main"
        app:layout_constraintTop_toTopOf="@id/product_bundling_icon_main"
        app:typographyType="heading_5"
        tools:text="Paket Hemat" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@id/product_bundling_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/product_bundling_title"
        app:typographyType="body_3"
        tools:text="PO 6 hari" />

    <LinearLayout
        android:id="@+id/product_bundling_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/product_bundling_icon_main">

        <include
            android:id="@+id/product_bundling_content_single"
            layout="@layout/item_product_bundling_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            tools:visibility="gone" />

        <include
            android:id="@+id/product_bundling_content_multi"
            layout="@layout/item_product_bundling_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16" />

    </LinearLayout>

    <View
        android:id="@+id/product_bundling_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@id/product_bundling_content"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_total_slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/Unify_NN400"
        app:layout_constraintLeft_toLeftOf="@id/product_bundling_icon_main"
        app:layout_constraintTop_toBottomOf="@id/product_bundling_line"
        app:typographyType="body_3"
        tools:text="Rp8.649.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_total_saving_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:text="@string/pdp_bundling_saving"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@id/product_bundling_total_slash"
        app:layout_constraintLeft_toRightOf="@id/product_bundling_total_slash"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_total_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_3"
        android:textColor="@color/Unify_R400"
        app:layout_constraintBottom_toBottomOf="@id/product_bundling_total_saving_text"
        app:layout_constraintLeft_toRightOf="@id/product_bundling_total_saving_text"
        app:typographyType="body_3"
        tools:text="Rp155.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/product_bundling_total_slash"
        app:layout_constraintTop_toBottomOf="@id/product_bundling_total_slash"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp8.494.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_bundling_total_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/product_bundling_total_price"
        app:layout_constraintTop_toBottomOf="@id/product_bundling_total_price"
        app:typographyType="body_3"
        tools:text="(Total 3 barang)" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/product_bundling_button_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pdp_bundling_button_see"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/product_bundling_info"
        app:layout_constraintTop_toBottomOf="@id/product_bundling_line"
        app:unifyButtonSize="small"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost" />

</androidx.constraintlayout.widget.ConstraintLayout>