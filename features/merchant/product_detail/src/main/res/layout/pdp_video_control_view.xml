<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@id/exo_play"
            style="@style/ExoMediaButton.Play"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44" />

        <ImageView
            android:id="@id/exo_pause"
            style="@style/ExoMediaButton.Pause"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44" />

    </FrameLayout>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/pdp_volume_control"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        app:icon_name="VOLUME_MUTE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@id/exo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/pdp_volume_control"
        app:layout_constraintStart_toEndOf="@+id/pdp_volume_control"
        app:layout_constraintTop_toTopOf="@+id/pdp_volume_control"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="00:00" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/exo_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="@+id/exo_position"
        app:layout_constraintStart_toEndOf="@+id/exo_position"
        app:layout_constraintTop_toTopOf="@+id/exo_position"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@id/exo_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="@+id/exo_divider"
        app:layout_constraintStart_toEndOf="@+id/exo_divider"
        app:layout_constraintTop_toTopOf="@+id/exo_divider"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="00:00" />

</androidx.constraintlayout.widget.ConstraintLayout>