<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <com.tokopedia.product.info.widget.TitleAnimatedChevron
        android:id="@+id/expandable_title_chevron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_detail_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:longClickable="true"
        android:paddingTop="@dimen/dp_12"
        android:visibility="gone"
        app:typographyType="body_2" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/horizontal_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <View
        android:id="@+id/expandable_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/Neutral_N75"
        app:layout_constraintTop_toBottomOf="@+id/loader_detail_item_title_1" />

</LinearLayout>