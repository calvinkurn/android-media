<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <com.tokopedia.product.info.widget.TitleAnimatedChevron
        android:id="@+id/expandable_title_chevron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/product_detail_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:longClickable="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorLink="@color/Unify_GN500"
        android:visibility="gone"
        app:typographyType="paragraph_2" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/horizontal_view_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/expandable_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/Unify_NN50" />

</LinearLayout>