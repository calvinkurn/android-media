<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtVariantCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Pilih Warna : " />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtVariantSelectedOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/txtVariantCategoryName"
        app:layout_constraintStart_toEndOf="@+id/txtVariantCategoryName"
        app:layout_constraintTop_toTopOf="@+id/txtVariantCategoryName"
        app:typographyType="body_2"
        tools:text="10 Pilihan" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txtVariantGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/tkpd_main_green"
        app:layout_constraintBottom_toBottomOf="@+id/txtVariantCategoryName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtVariantCategoryName"
        app:typographyType="body_2"
        android:visibility="gone"
        tools:text="Lihat Panduan" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_variant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVariantCategoryName"
        tools:itemCount="1"
        tools:listitem="@layout/item_variant_options_view_holder" />

</androidx.constraintlayout.widget.ConstraintLayout>