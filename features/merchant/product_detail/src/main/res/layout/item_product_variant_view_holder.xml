<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerProductVariant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/variant_parent_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl1"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContainerVariant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <include
        layout="@layout/item_local_load_unify"/>

    <View
        android:id="@+id/divider_variant"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Unify_N100"
        android:visibility="visible"/>

</LinearLayout>