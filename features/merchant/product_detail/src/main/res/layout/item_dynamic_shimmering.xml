<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_5"
    android:orientation="vertical">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_img_main"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_300"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_ulasan"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_64"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toStartOf="@+id/loader_discussion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_divider" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_discussion"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_64"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toStartOf="@+id/loader_shipping"
        app:layout_constraintStart_toEndOf="@+id/loader_ulasan"
        app:layout_constraintTop_toBottomOf="@+id/loader_divider" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_shipping"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_64"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_discussion"
        app:layout_constraintTop_toBottomOf="@+id/loader_divider" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_title"
        android:layout_width="@dimen/dp_350"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_img_main" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_title_2"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_title" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_title_3"
        android:layout_width="@dimen/dp_75"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_title_2" />


    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_title_3" />


    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_ulasan_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintEnd_toStartOf="@+id/loader_discussion_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_ulasan" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_discussion_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintEnd_toStartOf="@+id/loader_shipping_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/loader_ulasan_txt"
        app:layout_constraintTop_toBottomOf="@+id/loader_discussion" />


    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_shipping_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/loader_discussion_txt"
        app:layout_constraintTop_toBottomOf="@+id/loader_ulasan" />


    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_social_proof"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toBottomOf="@+id/loader_ulasan_txt" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_other"
        android:layout_width="@dimen/dp_350"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_social_proof" />

</androidx.constraintlayout.widget.ConstraintLayout>