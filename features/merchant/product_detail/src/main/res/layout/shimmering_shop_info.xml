<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pdp_shimmering_shop_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_txt_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_15"
        app:corners="@integer/corner_radius_shimmering"
        app:width_weight="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_img"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_txt_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_txt_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:width_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_img"
        app:layout_constraintTop_toTopOf="@+id/loader_img" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_txt_3"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:width_weight="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/loader_txt_2"
        app:layout_constraintTop_toBottomOf="@+id/loader_txt_2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_txt_4"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:width_weight="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/loader_txt_2"
        app:layout_constraintTop_toBottomOf="@+id/loader_txt_3" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/button_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintEnd_toStartOf="@+id/button_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_img" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/button_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_1"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@+id/loader_img" />

</androidx.constraintlayout.widget.ConstraintLayout>