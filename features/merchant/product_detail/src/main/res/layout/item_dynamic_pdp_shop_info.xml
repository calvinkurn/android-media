<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_shop_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_16"
    android:visibility="visible">

    <View
        android:id="@+id/shop_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/Unify_N50"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pdp_shop_info_container"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/shop_separator"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/shop_ava"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@color/Unify_G400" />

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/shop_name"
            app:layout_constraintLeft_toRightOf="@+id/shop_ava"
            app:layout_constraintStart_toEndOf="@+id/shop_ava"
            app:layout_constraintTop_toTopOf="@+id/shop_name"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_official_store_product"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/shop_location_online"
            app:layout_constraintLeft_toRightOf="@+id/shop_ava"
            app:layout_constraintStart_toEndOf="@+id/shop_ava"
            app:layout_constraintTop_toTopOf="@+id/shop_location_online"
            app:srcCompat="@drawable/ic_icon_location_grey"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/l_medal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintLeft_toRightOf="@+id/shop_ava"
            app:layout_constraintStart_toEndOf="@+id/shop_ava"
            app:layout_constraintTop_toBottomOf="@+id/shop_location_online" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/shop_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@color/Unify_G200"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_4"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_2"
            android:textColor="@color/Unify_G400"
            android:visibility="visible"
            app:fontSize="micro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/shop_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop_name"
            app:layout_constraintTop_toTopOf="@+id/shop_ava"
            app:layout_goneMarginLeft="@dimen/dp_12"
            app:layout_goneMarginStart="@dimen/dp_12"
            tools:text="By GoApotik"
            tools:textSize="12sp" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/shop_location_online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_4"
            android:maxLines="2"
            app:fontSize="micro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_location"
            app:layout_constraintTop_toBottomOf="@+id/shop_name"
            app:textViewTheme="lightDisabled"
            tools:text="SHOP NAME asdasdsadsadasddasasddsadsadasdsadsa" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/shop_feature"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/iv_badge"
            app:layout_constraintRight_toRightOf="@+id/shop_feature"
            app:layout_constraintStart_toEndOf="@+id/iv_badge"
            app:layout_constraintTop_toTopOf="@+id/shop_ava"
            app:layout_goneMarginLeft="@dimen/dp_12"
            app:layout_goneMarginStart="@dimen/dp_12"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="SHOP NAME Shop name SHOP 12" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/send_msg_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/bg_button_white_border"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/label_chat_seller"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/sp_12"
            app:drawableLeftCompat="@drawable/ic_topchat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_medal"
            app:layout_goneMarginEnd="@dimen/dp_0"
            app:layout_goneMarginRight="@dimen/dp_0" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/btn_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:background="@drawable/bg_button_green"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/label_follow"
            android:textColor="@color/Unify_N0"
            android:textSize="@dimen/sp_12"
            app:drawableLeftCompat="@drawable/ic_plus_add_white_24"
            app:layout_constraintBottom_toBottomOf="@+id/send_msg_shop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/send_msg_shop"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/send_msg_shop"
            app:layout_constraintTop_toTopOf="@+id/send_msg_shop"
            app:layout_goneMarginLeft="@dimen/dp_0"
            app:layout_goneMarginStart="@dimen/dp_0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/pdp_shimmering_shop_info"
        layout="@layout/shimmering_shop_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>