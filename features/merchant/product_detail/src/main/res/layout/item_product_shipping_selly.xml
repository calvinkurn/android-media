<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pdp_selly_guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pdp_selly_guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pdp_selly_guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="12dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_selly_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/pdp_selly_guideline_end"
        app:layout_constraintStart_toStartOf="@id/pdp_selly_guideline_start"
        app:layout_constraintTop_toTopOf="@id/pdp_selly_guideline_top"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Pengiriman terjadwal"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_selly_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/pdp_selly_guideline_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_selly_title"
        app:layout_goneMarginTop="0dp"
        app:typographyType="display_3"
        tools:text="Hari ini"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/pdp_selly_time_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/pdp_selly_guideline_end"
        app:layout_constraintStart_toStartOf="@id/pdp_selly_guideline_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_selly_date" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pdp_selly_expandable_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="2dp"
        android:text="Jadwal Lainnya"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintEnd_toEndOf="@id/pdp_selly_guideline_end"
        app:layout_constraintStart_toStartOf="@id/pdp_selly_guideline_start"
        app:layout_constraintTop_toBottomOf="@id/pdp_selly_time_list"
        app:typographyType="display_3"
        app:typographyWeight="bold" />


</androidx.constraintlayout.widget.ConstraintLayout>