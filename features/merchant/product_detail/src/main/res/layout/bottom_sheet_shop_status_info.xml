<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_24"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/message_close_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700"
            app:typographyType="body_2"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Tutup, pindah Bukalapak" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/message_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700"
            app:typographyType="body_2"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="Jangan khawatir, semua order yang masuk akan kami proses. Buka setiap hari jam 10 pagi ya gays. Okkee" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_request_open_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_27"
            android:visibility="gone"
            tools:text="@string/bs_btn_title"/>

    </LinearLayout>
</ScrollView>