<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <LinearLayout
        android:id="@+id/ll_shipping_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shipping_weight"
        app:layout_constraintEnd_toStartOf="@+id/shipping_weight">

        <TextView style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="wrap_content"
            android:text="@string/rate_est_detail_dest_fmt"/>

        <TextView style="@style/TextView.Micro.BlackSecondary"
            android:id="@+id/shipping_destination"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/weight"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_width="wrap_content"
        android:text="@string/rate_est_detail_weight_fmt"
        app:layout_constraintTop_toTopOf="@+id/ll_shipping_destination"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView style="@style/TextView.Micro.BlackSecondary"
        android:id="@+id/shipping_weight"
        android:layout_width="wrap_content"
        tools:text="1000 gram"
        app:layout_constraintTop_toBottomOf="@+id/weight"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView style="@style/TextView.Micro.BlackSecondary"
        android:id="@+id/shipping_receiver_name"
        android:layout_width="0dp"
        tools:text="@string/service_title_format"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/ll_shipping_destination"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView style="@style/TextView.Micro.BlackSecondary"
        android:id="@+id/shipping_receiver_phone"
        android:layout_width="0dp"
        tools:text="@string/service_title_format"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:lineSpacingExtra="@dimen/sp_6"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/shipping_receiver_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView style="@style/TextView.Micro.BlackSecondary"
        android:id="@+id/shipping_receiver_address"
        android:layout_width="0dp"
        tools:text="@string/service_title_format"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:lineSpacingExtra="@dimen/sp_6"
        app:layout_constraintTop_toBottomOf="@+id/shipping_receiver_phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:layout_marginTop="@dimen/dp_16"
        android:padding="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/shipping_receiver_address"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/indicator1"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@drawable/ic_bullet_green"
            app:layout_constraintEnd_toStartOf="@+id/information1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/information1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/information1" />

        <TextView style="@style/TextView.Micro.BlackSecondary"
            android:id="@+id/information1"
            android:layout_width="0dp"
            android:text="@string/shipping_cost_descr_1"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/indicator1"
            app:layout_constraintStart_toEndOf="@+id/indicator1"/>

        <ImageView android:id="@+id/indicator2"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:src="@drawable/ic_bullet_green"
            android:layout_marginTop="@dimen/dp_14"
            app:layout_constraintTop_toBottomOf="@id/information1"
            app:layout_constraintStart_toStartOf="@+id/indicator1"
            app:layout_constraintLeft_toLeftOf="@+id/indicator1"/>

        <TextView style="@style/TextView.Micro.BlackSecondary"
            android:id="@+id/information2"
            android:layout_width="0dp"
            android:text="@string/shipping_cost_descr_2"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@+id/information1"
            app:layout_constraintRight_toRightOf="@+id/information1"
            app:layout_constraintEnd_toEndOf="@+id/information1"
            app:layout_constraintLeft_toRightOf="@+id/indicator2"
            app:layout_constraintStart_toEndOf="@+id/indicator2"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>