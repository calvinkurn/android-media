<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <LinearLayout
        android:id="@+id/ll_shipping_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/shipping_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shipping_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="wrap_content"
            android:text="@string/rate_est_detail_dest_fmt" />

        <TextView
            android:id="@+id/shipping_destination"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/shipping_weight"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight"
        tools:text="1000 gram" />

    <TextView
        android:id="@+id/shipping_receiver_name"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_shipping_destination"
        tools:text="@string/service_title_format" />

    <TextView
        android:id="@+id/shipping_receiver_phone"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:lineSpacingExtra="@dimen/sp_6"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipping_receiver_name"
        tools:text="@string/service_title_format" />

    <TextView
        android:id="@+id/shipping_receiver_address"
        style="@style/TextView.Micro.BlackSecondary"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:lineSpacingExtra="@dimen/sp_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipping_receiver_phone"
        tools:text="@string/service_title_format" />

    <TextView
        android:id="@+id/weight"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_width="wrap_content"
        android:text="@string/rate_est_detail_weight_fmt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_shipping_destination" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/light_grey"
        android:padding="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipping_receiver_address">

        <ImageView
            android:id="@+id/indicator1"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            app:layout_constraintEnd_toStartOf="@+id/information1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/information1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/information1"
            app:srcCompat="@drawable/ic_bullet_green" />

        <ImageView
            android:id="@+id/indicator2"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="@+id/indicator1"
            app:layout_constraintStart_toStartOf="@+id/indicator1"
            app:layout_constraintTop_toBottomOf="@id/information1"
            app:srcCompat="@drawable/ic_bullet_green" />

        <TextView
            android:id="@+id/information1"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="@string/shipping_cost_descr_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/indicator1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/indicator1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/information2"
            style="@style/TextView.Micro.BlackSecondary"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/shipping_cost_descr_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/information1"
            app:layout_constraintLeft_toRightOf="@+id/indicator2"
            app:layout_constraintRight_toRightOf="@+id/information1"
            app:layout_constraintStart_toEndOf="@+id/indicator2"
            app:layout_constraintTop_toBottomOf="@+id/information1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ticker_free_ongkir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:closeButtonVisibility="gone"
        app:descriptionText="Pengiriman ini berpotensi Bebas Ongkir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_container"
        app:layout_constraintVertical_bias="0"
        app:tickerShapeType="loose"
        app:tickerType="announcement" />

</androidx.constraintlayout.widget.ConstraintLayout>