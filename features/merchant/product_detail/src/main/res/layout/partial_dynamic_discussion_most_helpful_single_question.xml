<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/layout_lvl2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productDetailDiscussionSingleQuestion"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/productDetailDiscussionSingleQuestionChevron"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/productDetailDiscussionSingleQuestionChevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_discussion"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/productDetailDiscussionSingleQuestionProfilePicture"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:visibility="gone"
        app:unify_image_type="circle"
        app:layout_constraintStart_toStartOf="@id/productDetailDiscussionSingleQuestion"
        app:layout_constraintTop_toBottomOf="@id/productDetailDiscussionSingleQuestion" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/productDetailDiscussionSingleQuestionSellerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_detail_discussion_seller_label"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:visibility="gone"
        app:labelType="general_light_grey"
        app:layout_constraintTop_toTopOf="@id/productDetailDiscussionSingleQuestionProfilePicture"
        app:layout_constraintStart_toEndOf="@id/productDetailDiscussionSingleQuestionProfilePicture" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productDetailDiscussionSingleQuestionDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:visibility="gone"
        android:textColor="@color/Neutral_N700_68"
        app:layout_goneMarginStart="@dimen/layout_lvl2"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toTopOf="@id/productDetailDiscussionSingleQuestionProfilePicture"
        app:layout_constraintStart_toEndOf="@id/productDetailDiscussionSingleQuestionSellerLabel" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productDetailDiscussionSingleQuestionDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:visibility="gone"
        android:textColor="@color/Neutral_N700_68"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toEndOf="@id/productDetailDiscussionSingleQuestionDisplayName"
        app:layout_constraintTop_toTopOf="@id/productDetailDiscussionSingleQuestionDisplayName" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productDetailDiscussionSingleQuestionMessage"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_goneMarginStart="@dimen/layout_lvl2"
        app:typographyType="body_2"
        app:layout_constraintStart_toStartOf="@id/productDetailDiscussionSingleQuestionSellerLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productDetailDiscussionSingleQuestionDisplayName" />

    <ImageView
        android:id="@+id/productDetailDiscussionSingleQuestionAttachedProductIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:srcCompat="@drawable/ic_discussion_attached_product"
        app:layout_constraintStart_toStartOf="@id/productDetailDiscussionSingleQuestionMessage"
        app:layout_constraintTop_toBottomOf="@id/productDetailDiscussionSingleQuestionMessage"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productDetailDiscussionSingleQuestionAttachedProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:textColor="@color/Neutral_N700_68"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toEndOf="@id/productDetailDiscussionSingleQuestionAttachedProductIcon"
        app:layout_constraintTop_toTopOf="@id/productDetailDiscussionSingleQuestionAttachedProductIcon" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productDetailDiscussionSingleQuestionAttachedSeeOtherAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N700_68"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/productDetailDiscussionSingleQuestionAttachedProductIcon"
        app:layout_constraintStart_toStartOf="@id/productDetailDiscussionSingleQuestionMessage" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/productDetailDiscussionSingleQuestionAttachedNoAnswers"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:visibility="gone"
        android:text="@string/product_detail_discussion_no_answers"
        android:textColor="@color/Neutral_N700_32"
        app:layout_constraintTop_toBottomOf="@id/productDetailDiscussionSingleQuestion"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="@id/productDetailDiscussionSingleQuestion"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>