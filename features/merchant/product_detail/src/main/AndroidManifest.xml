<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.product.detail" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:label="@string/app_name"
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity android:name=".view.activity.ProductDetailActivity"
            android:label="@string/title_activity_product_detail"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.White"/>

        <activity android:name=".view.activity.ProductYoutubePlayerActivity"
            android:screenOrientation="landscape"/>

        <activity android:name=".view.activity.ProductFullDescriptionActivity"
            android:label="@string/label_product_desc"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

    </application>

</manifest>
