<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.product.detail" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:label="@string/app_name"
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity android:name=".view.activity.ProductDetailActivity"
            android:configChanges="uiMode"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_product_detail"/>
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_product_detail_domain"/>

            </intent-filter>
        </activity>

        <activity android:name=".view.activity.ProductYoutubePlayerActivity"
            android:screenOrientation="landscape"/>

        <activity android:name=".view.activity.CourierActivity"
            android:label="@string/product_detail_courier"
            android:theme="@style/Theme.White"/>

        <activity android:name=".estimasiongkir.view.activity.RatesEstimationDetailActivity"
            android:label="@string/label_rates_estimation_detail"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".view.activity.ProductInstallmentActivity"
            android:label="@string/label_product_installment"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".view.activity.WholesaleActivity"
            android:label="@string/label_product_wholesale"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".view.activity.ProductFullDescriptionTabActivity"
            android:label="@string/label_product_desc"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

        <activity android:name=".imagepreview.view.activity.ImagePreviewPdpActivity"
            android:label="@string/label_image_preview_pdp"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"/>

    </application>

</manifest>
