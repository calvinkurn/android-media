<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerSawOrderListEmpty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/saw_shape_rectangle_white_radius_16dp">

    <ImageView
        android:id="@+id/imgSawOrderAppIcon"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:padding="@dimen/spacing_lvl2"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvSawOrderShopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgSawOrderAppIcon"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_toStartOf="@+id/btnSawOrderRefresh"
        android:layout_toEndOf="@+id/imgSawOrderAppIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700"
        android:textSize="@dimen/unify_font_16"
        android:textStyle="bold"
        tools:text="Tomodachi Shop" />

    <TextView
        android:id="@+id/tvSawOrderTotalOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSawOrderShopName"
        android:layout_alignStart="@+id/tvSawOrderShopName"
        android:textColor="@color/Green_G500"
        android:textSize="@dimen/unify_font_10"
        android:textStyle="bold"
        tools:text="5 Pesanan Baru" />

    <ImageView
        android:id="@+id/icSawOrderMoreOrder"
        android:layout_width="@dimen/layout_lvl1"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_alignTop="@+id/tvSawOrderTotalOrder"
        android:layout_alignBottom="@+id/tvSawOrderTotalOrder"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_toEndOf="@+id/tvSawOrderTotalOrder"
        app:srcCompat="@drawable/ic_saw_chevron_right" />

    <TextView
        android:id="@+id/tvSawOrderUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvSawOrderTotalOrder"
        android:layout_alignBottom="@+id/tvSawOrderTotalOrder"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/unify_space_12"
        android:textColor="@color/Neutral_N700_44"
        android:textSize="@dimen/unify_font_10"
        tools:text="Diperbarui 11.00" />

    <ImageButton
        android:id="@+id/btnSawOrderRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvSawOrderShopName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/unify_space_12"
        android:background="@color/transparent" />

    <ListView
        android:id="@+id/lvSawOrderList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/containerSawOrderSwitch"
        android:layout_below="@+id/icSawOrderMoreOrder"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:divider="@null"
        tools:itemCount="4"
        tools:listitem="@layout/saw_app_widget_order_item" />

    <LinearLayout
        android:id="@+id/containerSawOrderSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgSawOrderSwitchLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/saw_dimen_6dp" />

        <TextView
            android:id="@+id/tvSawOrderSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            android:text="@string/saw_ready_to_ship"
            android:textColor="@color/Green_G500"
            android:textSize="@dimen/unify_space_12"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgSawOrderSwitchRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/saw_dimen_6dp" />
    </LinearLayout>
</RelativeLayout>