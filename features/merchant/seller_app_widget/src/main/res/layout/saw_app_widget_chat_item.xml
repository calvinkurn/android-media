<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerSawOrderItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/unify_space_12"
    android:paddingTop="@dimen/layout_lvl1"
    android:paddingEnd="@dimen/layout_lvl0">

    <TextView
        android:id="@+id/tvSawChatItemUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tvSawChatItemTime"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700"
        android:textSize="@dimen/unify_font_12"
        android:textStyle="bold"
        tools:text="Ilham Suaib" />

    <TextView
        android:id="@+id/tvSawChatItemMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSawChatItemUserName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_toStartOf="@+id/tvSawChatItemTime"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700_44"
        android:textSize="@dimen/unify_font_10"
        android:visibility="gone"
        tools:text="Batas response 1 hari"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvSawChatItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_N700_44"
        android:textSize="@dimen/unify_font_10"
        tools:text="Kemarin" />

    <RelativeLayout
        android:id="@+id/horLineSawOrderItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvSawChatItemMessage"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:background="@color/Unify_N50" />
</RelativeLayout>