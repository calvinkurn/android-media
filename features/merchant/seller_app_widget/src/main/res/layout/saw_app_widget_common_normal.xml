<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerSawNormalCommonState"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/saw_shape_rectangle_white_radius_16dp"
    android:orientation="vertical"
    android:padding="@dimen/layout_lvl2">

    <TextView
        android:id="@+id/tvSawNormalCommonTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnSawNormalRefreshCommon"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/Unify_N700_96"
        android:textSize="@dimen/unify_font_16"
        android:textStyle="bold"
        tools:text="Masuk ke Tokopedia Seller" />

    <ImageButton
        android:id="@+id/btnSawNormalRefreshCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/tvSawNormalCommonDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSawNormalCommonTitle"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:lineSpacingExtra="@dimen/spacing_lvl1"
        android:textColor="@color/Unify_N700"
        android:textSize="@dimen/unify_font_12"
        tools:text="Check pesanan biar nggak ada pesanan yang terlewat, ya." />

    <TextView
        android:id="@+id/tvSawNormalCommonCta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSawNormalCommonDescription"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:textColor="@color/Unify_G500"
        android:textSize="@dimen/unify_font_12"
        android:textStyle="bold"
        tools:text="Masuk sekarang" />

    <ImageView
        android:id="@+id/imgSawNormalCommon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvSawNormalCommonCta"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/layout_lvl6"
        android:layout_marginTop="@dimen/layout_lvl3"
        tools:src="@tools:sample/avatars" />
</RelativeLayout>