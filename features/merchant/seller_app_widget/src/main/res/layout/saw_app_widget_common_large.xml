<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerSawLargeCommonState"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/saw_shape_rectangle_white_radius_16dp"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible"
    android:padding="@dimen/layout_lvl2">

    <ImageButton
        android:id="@+id/btnSawLargeRefreshCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSawLargeCommon"
            android:layout_width="@dimen/saw_dimen_200dp"
            android:layout_height="@dimen/saw_dimen_160dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvSawLargeCommonTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="3"
            android:textAlignment="center"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/unify_font_16"
            android:textStyle="bold"
            tools:text="Masuk ke Tokopedia Seller" />

        <TextView
            android:id="@+id/tvSawLargeCommonDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/spacing_lvl1"
            android:textAlignment="center"
            android:textColor="@color/Unify_N700"
            android:textSize="@dimen/unify_font_12"
            tools:text="Check pesanan biar nggak ada pesanan yang terlewat, ya." />

        <TextView
            android:id="@+id/tvSawLargeCommonCta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/unify_font_12"
            android:textStyle="bold"
            tools:text="Masuk sekarang" />
    </LinearLayout>
</RelativeLayout>