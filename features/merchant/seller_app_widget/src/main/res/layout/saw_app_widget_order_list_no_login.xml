<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerSawOrderListNoLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_lvl2"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saw_login_tokopedia"
        android:textColor="@color/Neutral_N700_96"
        android:textSize="@dimen/unify_font_16"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:lineSpacingExtra="@dimen/spacing_lvl1"
        android:text="@string/saw_no_login_check_chat_message"
        android:textSize="@dimen/unify_font_12" />

    <TextView
        android:id="@+id/tvSawOrderLoginNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:text="@string/saw_login_now"
        android:textColor="@color/Unify_G500"
        android:textSize="@dimen/unify_font_12"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgSawOrderNoLogin"
        android:layout_width="@dimen/saw_dimen_200dp"
        android:layout_height="@dimen/saw_dimen_148dp"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl3"
        tools:src="@tools:sample/avatars" />
</LinearLayout>