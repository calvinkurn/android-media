<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/partial_view_holder_observer" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSobSliderPromoTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sob_title_top_margin"
        android:gravity="center"
        android:text="@string/sob_slider_title_promo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewObserver"
        app:typographyType="heading_3" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobPromo"
        android:layout_width="@dimen/sob_dimen_promo_image_1_width"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginTop="@dimen/layout_lvl4"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSobSliderPromoTitle"
        tools:src="@drawable/onboarding_04" />
</androidx.constraintlayout.widget.ConstraintLayout>