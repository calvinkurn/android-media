<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/partial_view_holder_observer" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSobSliderMessageTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sob_title_top_margin"
        android:gravity="center"
        android:text="@string/sob_slider_title_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewObserver"
        app:typographyType="heading_3" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobMessageBg"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginStart="@dimen/sob_circle_bg_start_end_margin"
        android:layout_marginEnd="@dimen/sob_circle_bg_start_end_margin"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSobSliderMessageTitle"
        tools:src="@drawable/bg_sob_circle" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobMessage1"
        android:layout_width="@dimen/sob_dimen_message_image_1_width"
        android:layout_height="@dimen/sob_dimen_message_image_1_height"
        android:layout_marginStart="@dimen/sob_message_widget_start_margin"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/imgSobMessage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSobSliderMessageTitle"
        app:srcCompat="@drawable/ic_sob_widget_android" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobMessage2"
        android:layout_width="@dimen/sob_dimen_message_image_2_width"
        android:layout_height="@dimen/sob_dimen_message_image_2_height"
        android:layout_marginEnd="@dimen/sob_message_smart_reply_end_margin"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/imgSobMessage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSobMessage1"
        app:srcCompat="@drawable/ic_sob_smart_reply" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobMessage3"
        android:layout_width="@dimen/sob_dimen_message_image_3_width"
        android:layout_height="@dimen/sob_dimen_message_image_3_height"
        android:layout_marginStart="@dimen/sob_message_broadcast_start_margin"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSobMessage2"
        app:srcCompat="@drawable/ic_sob_broadcast_chat" />

</androidx.constraintlayout.widget.ConstraintLayout>