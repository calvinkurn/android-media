<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/partial_view_holder_observer" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSobSliderMessageTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl7"
        android:gravity="center"
        android:text="Sigap balas pembeli supaya \nnggak ada pesanan terlewat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobMessageBg"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginStart="@dimen/layout_lvl4"
        android:layout_marginEnd="@dimen/layout_lvl4"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSobSliderMessageTitle"
        tools:src="@drawable/bg_sob_circle" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobMessage1"
        android:layout_width="@dimen/sob_dimen_message_image_1_width"
        android:layout_height="@dimen/sob_dimen_message_image_1_height"
        android:layout_marginStart="72dp"
        app:layout_constraintBottom_toTopOf="@+id/imgSobMessage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSobSliderMessageTitle"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/onboarding_02_1" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobMessage2"
        android:layout_width="@dimen/sob_dimen_message_image_2_width"
        android:layout_height="@dimen/sob_dimen_message_image_2_height"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintBottom_toTopOf="@+id/imgSobMessage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSobMessage1"
        tools:src="@drawable/onboarding_02_2" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobMessage3"
        android:layout_width="@dimen/sob_dimen_message_image_3_width"
        android:layout_height="@dimen/sob_dimen_message_image_3_height"
        android:layout_marginStart="88dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSobMessage2"
        tools:src="@drawable/onboarding_02_3" />

</androidx.constraintlayout.widget.ConstraintLayout>