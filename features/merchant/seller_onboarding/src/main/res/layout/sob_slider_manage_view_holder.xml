<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/partial_view_holder_observer" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSobSliderManageTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sob_slider_title_manage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewObserver"
        app:typographyType="heading_3" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobManageBg"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginStart="@dimen/sob_circle_bg_start_end_margin"
        android:layout_marginEnd="@dimen/sob_circle_bg_start_end_margin"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSobSliderManageTitle"
        tools:src="@drawable/bg_sob_circle" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobManage1"
        android:layout_width="@dimen/sob_dimen_manage_image_1_width"
        android:layout_height="@dimen/sob_dimen_manage_image_1_height"
        android:layout_marginStart="@dimen/sob_manage_product_start_margin"
        android:layout_marginBottom="@dimen/layout_lvl2"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/imgSobManage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSobSliderManageTitle"
        tools:src="@drawable/img_sob_manage_stock" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobManage2"
        android:layout_width="@dimen/sob_dimen_manage_image_2_width"
        android:layout_height="@dimen/sob_dimen_manage_image_2_height"
        android:layout_marginEnd="@dimen/sob_manage_print_label_end_margin"
        android:scaleType="fitCenter"
        android:layout_marginBottom="@dimen/layout_lvl6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSobManage1"
        tools:src="@drawable/img_sob_som_card" />
</androidx.constraintlayout.widget.ConstraintLayout>