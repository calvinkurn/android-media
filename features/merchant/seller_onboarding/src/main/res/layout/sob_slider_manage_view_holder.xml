<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/partial_view_holder_observer" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSobSliderManageTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl7"
        android:gravity="center"
        android:text="Lebih praktis atur produk dan \nkelola pesanan sekaligus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobManageBg"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginStart="@dimen/layout_lvl4"
        android:layout_marginEnd="@dimen/layout_lvl4"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSobSliderManageTitle"
        tools:src="@drawable/bg_sob_circle" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobManage1"
        android:layout_width="@dimen/sob_dimen_manage_image_1_width"
        android:layout_height="@dimen/sob_dimen_manage_image_1_height"
        android:layout_marginStart="84dp"
        app:layout_constraintBottom_toTopOf="@+id/imgSobManage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSobSliderManageTitle"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/onboarding_03_1" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgSobManage2"
        android:layout_width="@dimen/sob_dimen_manage_image_2_width"
        android:layout_height="@dimen/sob_dimen_manage_image_2_height"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSobManage1"
        tools:src="@drawable/onboarding_03_2" />
</androidx.constraintlayout.widget.ConstraintLayout>