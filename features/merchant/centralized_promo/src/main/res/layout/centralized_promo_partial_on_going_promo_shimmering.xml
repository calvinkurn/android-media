<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCentralizedPromoOnGoingPromoShimmering"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="8dp"
   >
    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/itemOnGoingOne"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loaderCircle"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:loader_type="circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loaderPromoTitle"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/loaderCircle"
                app:layout_constraintTop_toTopOf="@id/loaderCircle"
                app:layout_constraintBottom_toBottomOf="@id/loaderCircle"
                app:layout_constraintWidth_percent="0.7"
                app:loader_corner_radius="16dp"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/loaderPromoTitle"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loaderDescription"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintWidth_percent="0.5"
                app:loader_corner_radius="16dp"
                app:loader_type="rect" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify2>

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/itemOnGoingTwo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/itemOnGoingOne"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loaderCircle1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:loader_type="circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loaderPromoTitle1"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/loaderCircle1"
                app:layout_constraintTop_toTopOf="@id/loaderCircle1"
                app:layout_constraintBottom_toBottomOf="@id/loaderCircle1"
                app:layout_constraintWidth_percent="0.7"
                app:loader_corner_radius="16dp"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/loaderPromoTitle1"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loaderDescription1"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintWidth_percent="0.5"
                app:loader_corner_radius="16dp"
                app:loader_type="rect" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify2>


    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/itemOnGoingThree"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/itemOnGoingTwo"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loaderCircle2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:loader_type="circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loaderPromoTitle2"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/loaderCircle2"
                app:layout_constraintTop_toTopOf="@id/loaderCircle2"
                app:layout_constraintBottom_toBottomOf="@id/loaderCircle2"
                app:layout_constraintWidth_percent="0.7"
                app:loader_corner_radius="16dp"
                app:loader_type="rect" />

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/loaderPromoTitle2"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/loaderDescription2"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                app:layout_constraintWidth_percent="0.5"
                app:loader_corner_radius="16dp"
                app:loader_type="rect" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify2>

</androidx.constraintlayout.widget.ConstraintLayout>