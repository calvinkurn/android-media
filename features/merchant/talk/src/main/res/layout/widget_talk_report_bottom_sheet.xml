<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkReplyReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="@string/report_bottom_sheet_text"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_talk_reply_report"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/talkReplyReport"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkReplyBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/block_bottom_sheet_text"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/divider_talk_reply_report"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_talk_reply_block"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/talkReplyBlock"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkReplyDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/Unify_NN950"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_talk_reply_block"
        app:layout_goneMarginTop="16dp"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="@string/delete_question_bottom_sheet"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>