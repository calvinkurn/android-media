<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkReplyReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_bottom_sheet_text"
        android:paddingBottom="@dimen/layout_lvl2"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyWeight="bold"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkReplyDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/layout_lvl2"
        android:visibility="gone"
        app:layout_goneMarginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/talkReplyReport"
        app:layout_constraintBottom_toBottomOf="parent"
        app:typographyWeight="bold"
        app:typographyType="body_2" />

</androidx.constraintlayout.widget.ConstraintLayout>