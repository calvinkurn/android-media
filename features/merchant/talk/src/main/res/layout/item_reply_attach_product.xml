<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/replyAttachProductImage"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyAttachProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iphone X Hijau 256 Garansi Resmi"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl1"
        app:layout_constraintStart_toEndOf="@id/replyAttachProductImage"
        app:layout_constraintTop_toTopOf="@id/replyAttachProductImage"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyAttachProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:text="Rp 20.000.000"
        app:layout_constraintStart_toStartOf="@id/replyAttachProductName"
        app:layout_constraintTop_toBottomOf="@id/replyAttachProductName"
        app:typographyType="body_3"
        app:typographyWeight="bold" />
    
    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="@id/replyAttachProductName"
        app:layout_constraintBottom_toBottomOf="@id/replyAttachProductPrice"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/replyAttachProductPrice"
        app:layout_constraintTop_toBottomOf="@id/replyAttachProductImage"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>