<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/replyProfilePicture"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:unify_image_type="circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/replySellerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reading_seller_label"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:visibility="gone"
        app:labelType="general_light_grey"
        app:layout_constraintTop_toTopOf="@id/replyProfilePicture"
        app:layout_constraintStart_toEndOf="@id/replyProfilePicture" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:text="Laura"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        app:layout_goneMarginStart="@dimen/layout_lvl2"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toTopOf="@id/replyProfilePicture"
        app:layout_constraintStart_toEndOf="@id/replySellerLabel" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:text="\u2022 30 Feb 2020"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toEndOf="@id/replyDisplayName"
        app:layout_constraintTop_toTopOf="@id/replyDisplayName" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyMessage"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:layout_goneMarginStart="@dimen/layout_lvl2"
        android:text="Pada dasarnya sih anti air gan, asal jangan disirem pake minyak jelantah aja yah masalahnya ntar jadi oily gitu gan"
        app:layout_constraintStart_toStartOf="@id/replySellerLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/replyDisplayName"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

</androidx.constraintlayout.widget.ConstraintLayout>