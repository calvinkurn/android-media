<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/talkReadingContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/readingQuestionTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:maxLines="5"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/readingProfilePicture"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:visibility="gone"
        app:unify_image_type="circle"
        app:layout_constraintStart_toStartOf="@id/readingQuestionTitle"
        app:layout_constraintTop_toBottomOf="@id/readingQuestionTitle" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/readingSellerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reading_seller_label"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:visibility="gone"
        app:labelType="general_light_grey"
        app:layout_constraintTop_toTopOf="@id/readingProfilePicture"
        app:layout_constraintStart_toEndOf="@id/readingProfilePicture" />
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/readingDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:visibility="gone"
        android:textColor="@color/Neutral_N700_68"
        app:layout_goneMarginStart="@dimen/layout_lvl2"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toTopOf="@id/readingProfilePicture"
        app:layout_constraintStart_toEndOf="@id/readingSellerLabel" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/readingDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:visibility="gone"
        android:textColor="@color/Neutral_N700_68"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toEndOf="@id/readingDisplayName"
        app:layout_constraintTop_toTopOf="@id/readingDisplayName" />
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/readingMessage"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_goneMarginStart="@dimen/layout_lvl2"
        app:typographyType="body_2"
        app:layout_constraintStart_toStartOf="@id/readingSellerLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/readingDisplayName" />

    <ImageView
        android:id="@+id/likeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="gone"
        app:layout_goneMarginStart="@dimen/layout_lvl2"
        app:srcCompat="@drawable/talk_ic_like"
        app:layout_constraintStart_toStartOf="@id/readingSellerLabel"
        app:layout_constraintTop_toBottomOf="@id/readingMessage" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/likeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/talk_like_count_place_holder"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:visibility="gone"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toEndOf="@id/likeIcon"
        app:layout_constraintTop_toTopOf="@id/likeIcon" />

    <ImageView
        android:id="@+id/attachedProductIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@drawable/talk_ic_attached_product"
        app:layout_constraintStart_toStartOf="@id/readingMessage"
        app:layout_constraintTop_toBottomOf="@id/readingMessage" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/attachedProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:textColor="@color/Neutral_N700_68"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toEndOf="@id/attachedProductIcon"
        app:layout_constraintTop_toTopOf="@id/attachedProductIcon" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/seeOtherAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingBottom="@dimen/layout_lvl2"
        android:textColor="@color/Green_G500"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/attachedProductCount"
        app:layout_constraintStart_toStartOf="@id/readingMessage" />
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/readingNoAnswersText"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:visibility="gone"
        android:text="@string/reading_no_answer"
        android:paddingBottom="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N700_32"
        app:layout_constraintTop_toBottomOf="@id/readingQuestionTitle"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="@id/readingQuestionTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>