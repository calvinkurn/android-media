<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_lvl2"
    android:background="@android:color/white">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/questionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi mau tanya klo beli produk ini ada bonusnya gak ya?"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintStart_toStartOf="@id/questionTitle"
        app:layout_constraintTop_toBottomOf="@id/questionTitle" />
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:text="Laura"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toTopOf="@id/profilePicture"
        app:layout_constraintStart_toEndOf="@id/profilePicture" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:text="30 Feb 2020"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toEndOf="@id/displayName"
        app:layout_constraintTop_toTopOf="@id/displayName" />
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/message"
        android:text="Yaaaaaah, kayanya sih gak ada nih kak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        app:layout_constraintStart_toStartOf="@id/displayName"
        app:layout_constraintTop_toBottomOf="@id/displayName" />

    



</androidx.constraintlayout.widget.ConstraintLayout>