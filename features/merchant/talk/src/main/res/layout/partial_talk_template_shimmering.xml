<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/layout_lvl2"
    android:background="@color/Unify_N0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_template_list_loading_title"
        android:layout_width="@dimen/dp_168"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_template_list_loading_subtitle"
        android:layout_width="@dimen/dp_234"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@id/talk_template_list_loading_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_template_list_loading_description"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@id/talk_template_list_loading_subtitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_template_list_loading_template"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@id/talk_template_list_loading_description" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_template_list_loading_template_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@id/talk_template_list_loading_template" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_template_list_loading_template_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@id/talk_template_list_loading_template_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_template_list_loading_template_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@id/talk_template_list_loading_template_2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_template_list_loading_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>