<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.SearchBarUnify
        android:id="@+id/replyAttachProductSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:search_bar_placeholder="@string/reply_attach_product_bottom_sheet_search_place_holder"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/replyAttachProductList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/replyAttachProductSearchBar"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/replyAttachProductSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/replyAttachProductList"/>

</androidx.constraintlayout.widget.ConstraintLayout>