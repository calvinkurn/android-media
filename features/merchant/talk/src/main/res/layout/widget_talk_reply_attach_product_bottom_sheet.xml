<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.SearchBarUnify
        android:id="@+id/replyAttachProductSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:search_bar_placeholder="@string/reply_attach_product_bottom_sheet_search_place_holder"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyAttachProductEmptyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:gravity="center"
        android:text="@string/reply_attach_product_bottom_sheet_empty_title"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/replyAttachProductSearchBar"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyAttachProductEmptySubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:gravity="center"
        android:text="@string/reply_attach_product_bottom_sheet_empty_subtitle"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/replyAttachProductEmptyTitle"
        app:layout_constraintStart_toStartOf="@id/replyAttachProductEmptyTitle"
        app:layout_constraintEnd_toEndOf="@id/replyAttachProductEmptyTitle"
        app:typographyType="body_3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/replyAttachProductRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/replyAttachProductSearchBar"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/replyAttachProductSubmitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/replyAttachProductRecyclerView"/>

</androidx.constraintlayout.widget.ConstraintLayout>