<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_image_shimmer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_title_header_shimmer"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="14dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@id/talk_write_image_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/talk_write_image_shimmer" />
    
    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="@id/talk_write_title_header_shimmer"
        app:layout_constraintEnd_toEndOf="@id/talk_write_title_header_shimmer"
        app:layout_constraintTop_toBottomOf="@id/talk_write_title_header_shimmer" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/talk_write_header_divider_shimmer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/talk_write_image_shimmer"/>
    
    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_body_title_shimmer"
        android:layout_width="@dimen/dp_168"
        android:layout_height="12dp"
        android:layout_marginTop="@dimen/dp_19"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/talk_write_header_divider_shimmer"
        app:layout_constraintStart_toStartOf="@id/talk_write_image_shimmer"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_large_block_shimmer"
        android:layout_width="@dimen/dp_120"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="@id/talk_write_body_title_shimmer"
        app:layout_constraintTop_toBottomOf="@id/talk_write_body_title_shimmer"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_large_block_shimmer_2"
        android:layout_width="@dimen/dp_120"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@id/talk_write_large_block_shimmer"
        app:layout_constraintTop_toTopOf="@id/talk_write_large_block_shimmer" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_large_block_shimmer_3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/talk_write_large_block_shimmer_2"
        app:layout_constraintTop_toTopOf="@id/talk_write_large_block_shimmer_2" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_large_block_shimmer_4"
        android:layout_width="@dimen/dp_80"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="@id/talk_write_large_block_shimmer"
        app:layout_constraintTop_toBottomOf="@id/talk_write_large_block_shimmer" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_large_block_shimmer_5"
        android:layout_width="@dimen/dp_120"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@id/talk_write_large_block_shimmer_4"
        app:layout_constraintTop_toTopOf="@id/talk_write_large_block_shimmer_4" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_item_title_shimmer"
        android:layout_width="@dimen/dp_168"
        android:layout_height="12dp"
        android:layout_marginTop="32dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/talk_write_large_block_shimmer_5"
        app:layout_constraintStart_toStartOf="@id/talk_write_image_shimmer" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_item_subtitle_shimmer"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/talk_write_item_title_shimmer"
        app:layout_constraintStart_toStartOf="@id/talk_write_item_title_shimmer"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_write_item_subtitle_2_shimmer"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/talk_write_item_subtitle_shimmer"
        app:layout_constraintStart_toStartOf="@id/talk_write_item_subtitle_shimmer"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/reply_item_subtitle_3_shimmer"
        android:layout_width="@dimen/dp_204"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="0dp"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/talk_write_item_subtitle_2_shimmer"
        app:layout_constraintStart_toStartOf="@id/talk_write_item_subtitle_2_shimmer"/>

</androidx.constraintlayout.widget.ConstraintLayout>