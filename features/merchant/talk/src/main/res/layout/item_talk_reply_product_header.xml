<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/talkReplyProductHeaderConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/replyProductHeaderImage"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_46"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyProductHeaderName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@id/replyProductHeaderKebab"
        app:layout_constraintStart_toEndOf="@id/replyProductHeaderImage"
        app:layout_constraintTop_toTopOf="@id/replyProductHeaderImage"
        app:layout_constraintBottom_toBottomOf="@id/replyProductHeaderImage"
        app:typographyType="heading_5"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyProductStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintTop_toBottomOf="@id/replyProductHeaderName"
        app:layout_constraintStart_toStartOf="@id/replyProductHeaderName"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/replyProductHeaderKebab"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/replyProductHeaderImage"
        app:icon_name="MENU_KEBAB_VERTICAL"
        app:icon_color_light_enable="@color/Unify_N200" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/reply_product_header_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/replyProductHeaderImage"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>