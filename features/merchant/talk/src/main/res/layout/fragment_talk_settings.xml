<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.talk.feature.sellersettings.settings.presentation.widget.TalkSettingsOption
        android:id="@+id/talkSettingsTemplateOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:option_text="@string/settings_template_item"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.talk.feature.sellersettings.settings.presentation.widget.TalkSettingsOption
        android:id="@+id/talkSettingsSmartReplyOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:option_text="@string/settings_smart_reply_item"
        app:layout_constraintTop_toBottomOf="@id/talkSettingsTemplateOption" />

</androidx.constraintlayout.widget.ConstraintLayout>