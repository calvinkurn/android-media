<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talk_report_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_header"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingTop="@dimen/layout_lvl1"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifycomponents.list.ListUnify
        android:id="@+id/talkReportOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/talk_report_header"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/talkReportReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:text_field_input_type="text"
        app:text_field_placeholder="@string/report_editText_placeholder"
        app:layout_constraintTop_toBottomOf="@id/talkReportOptions" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toTopOf="@id/send_button_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/send_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.tokopedia.unifycomponents.UnifyButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/talk_send"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/layout_lvl1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>