    <include layout="@layout/item_talk_inbox_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/talk_inbox_shimmer_item_4"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_shimmer_item_3"/>
    <include layout="@layout/item_talk_inbox_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/talk_inbox_shimmer_item_5"
