<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_image"
        android:layout_width="@dimen/empty_icon_talk_width"
        android:layout_height="@dimen/empty_icon_talk_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_60"
        tools:src="@drawable/ic_arrow_down"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/sp_8"
        android:text="@string/empty_inbox_talk_title"
        android:textColor="@color/font_black_secondary_54"
        android:textSize="@dimen/sp_16"
        android:textStyle="normal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_14"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/sp_5"
        android:text="@string/empty_talk_subtitle"
        android:textColor="@color/font_black_disabled_38"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        />

</LinearLayout>