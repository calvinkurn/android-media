<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/reading_image_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_29"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reading_connection_error_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reading_connection_error_title"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:gravity="center"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/reading_image_error"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reading_connection_error_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reading_connection_error_subtitle"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/reading_connection_error_title"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/talkConnectionErrorRetryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_60"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:text="@string/reading_connection_error_retry_button"
        app:layout_constraintTop_toBottomOf="@id/reading_connection_error_subtitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>