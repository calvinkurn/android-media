<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/talkInboxEmptyImage"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/layout_lvl5"
        android:layout_marginEnd="@dimen/layout_lvl5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkInboxEmptyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/talkInboxEmptyImage" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkInboxEmptySubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/talkInboxEmptyTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>