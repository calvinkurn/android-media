<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/reply_attach_product_shimmer_image"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/reply_attach_product_shimmer_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="@id/reply_attach_product_shimmer_image"
        app:layout_constraintStart_toEndOf="@id/reply_attach_product_shimmer_image"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/reply_attach_product_shimmer_subtitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_104"
        android:layout_marginRight="@dimen/dp_104"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:layout_constraintTop_toBottomOf="@id/reply_attach_product_shimmer_title"
        app:layout_constraintStart_toStartOf="@id/reply_attach_product_shimmer_title"
        app:layout_constraintEnd_toEndOf="@id/reply_attach_product_shimmer_title"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintStart_toStartOf="@id/reply_attach_product_shimmer_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>