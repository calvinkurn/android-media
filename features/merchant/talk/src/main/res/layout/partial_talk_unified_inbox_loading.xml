<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_unified_inbox_chips_loading"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_unified_inbox_chips_loading_1"
        android:layout_width="128dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/talk_unified_inbox_chips_loading"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <include layout="@layout/item_talk_unified_inbox_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/talk_inbox_shimmer_item"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/talk_unified_inbox_chips_loading"/>
    <include layout="@layout/item_talk_unified_inbox_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/talk_inbox_shimmer_item_2"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_shimmer_item"/>
    <include layout="@layout/item_talk_unified_inbox_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/talk_inbox_shimmer_item_3"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_shimmer_item_2"/>
    <include layout="@layout/item_talk_unified_inbox_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/talk_inbox_shimmer_item_4"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_shimmer_item_3"/>
    <include layout="@layout/item_talk_unified_inbox_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/talk_inbox_shimmer_item_5"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_shimmer_item_4"/>

</androidx.constraintlayout.widget.ConstraintLayout>