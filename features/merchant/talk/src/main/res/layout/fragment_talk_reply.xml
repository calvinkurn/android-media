<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.talk.feature.reply.presentation.widget.TalkReplyHeader
        android:id="@+id/talkReplyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkReplyTotalAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@android:color/white"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/talkReplyHeader" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/talkReplyTotalAnswers"/>

    <include
        android:id="@+id/pageLoading"
        layout="@layout/partial_talk_reply_shimmering"
        android:visibility="gone"/>

    <include
        android:id="@+id/pageError"
        layout="@layout/partial_talk_connection_error"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>