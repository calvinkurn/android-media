<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.talk.feature.reply.presentation.widget.TalkReplyHeader
        android:id="@+id/talkReplyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkReplyTotalAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/layout_lvl2"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/talkReplyHeader" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/talkReplyEmptyState"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl7"
        android:text="@string/reply_empty_state"
        android:maxLines="2"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_36"
        android:gravity="center"
        android:visibility="gone"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/talkReplyHeader"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/talkReplyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/talkReplyTotalAnswers"
        app:layout_constraintBottom_toTopOf="@id/replyTextBox"/>

    <com.tokopedia.talk.feature.reply.presentation.widget.TalkReplyTextbox
        android:id="@+id/replyTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <include
        android:id="@+id/pageLoading"
        layout="@layout/partial_talk_reply_shimmering"
        android:visibility="gone"/>

    <include
        android:id="@+id/pageError"
        layout="@layout/partial_talk_connection_error"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>