<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/reply_item_image_shimmer"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/reply_item_title_shimmer"
        android:layout_width="@dimen/dp_104"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="@id/reply_item_image_shimmer"
        app:layout_constraintStart_toEndOf="@id/reply_item_image_shimmer" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/reply_item_subtitle_shimmer"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:layout_constraintTop_toBottomOf="@id/reply_item_title_shimmer"
        app:layout_constraintStart_toStartOf="@id/reply_item_title_shimmer"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/reply_item_subtitle_2_shimmer"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:layout_constraintTop_toBottomOf="@id/reply_item_subtitle_shimmer"
        app:layout_constraintStart_toStartOf="@id/reply_item_subtitle_shimmer"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/reply_item_subtitle_3_shimmer"
        android:layout_width="@dimen/dp_217"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:layout_constraintTop_toBottomOf="@id/reply_item_subtitle_2_shimmer"
        app:layout_constraintStart_toStartOf="@id/reply_item_subtitle_2_shimmer"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/reply_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/reply_item_subtitle_3_shimmer"/>

</androidx.constraintlayout.widget.ConstraintLayout>