<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyHeaderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:text="30 Feb 2020"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyHeaderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:text="Ini barangnya anti air gak yah gan?"
        app:layout_constraintStart_toStartOf="@id/replyHeaderDate"
        app:layout_constraintTop_toBottomOf="@id/replyHeaderDate"
        app:typographyType="heading_4"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/replyHeaderFollowChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:chipText="Follow"
        app:chipType="alternate"
        app:layout_constraintStart_toStartOf="@id/replyHeaderDate"
        app:layout_constraintTop_toBottomOf="@id/replyHeaderMessage" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/replyHeaderTNC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        android:text="@string/reply_header_tnc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/replyHeaderFollowChip" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>