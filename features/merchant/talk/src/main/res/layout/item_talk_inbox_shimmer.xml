<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_inbox_shimmer_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_inbox_shimmer_title"
        android:layout_width="@dimen/dp_168"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="@id/talk_inbox_shimmer_thumbnail"
        app:layout_constraintStart_toEndOf="@id/talk_inbox_shimmer_thumbnail"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_inbox_shimmer_subtitle"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_shimmer_title"
        app:layout_constraintStart_toStartOf="@id/talk_inbox_shimmer_title"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_inbox_body"
        android:layout_width="@dimen/dp_204"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_shimmer_subtitle"
        app:layout_constraintStart_toStartOf="@id/talk_inbox_shimmer_title"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/talk_inbox_body_2"
        android:layout_width="@dimen/dp_80"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_body"
        app:layout_constraintStart_toStartOf="@id/talk_inbox_shimmer_title"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_body_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>