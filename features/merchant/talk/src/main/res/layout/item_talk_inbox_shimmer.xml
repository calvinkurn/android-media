<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/talk_inbox_shimmer_thumbnail"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_inbox_shimmer_title"
        android:layout_width="@dimen/dp_168"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toTopOf="@id/talk_inbox_shimmer_thumbnail"
        app:layout_constraintStart_toEndOf="@id/talk_inbox_shimmer_thumbnail"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_inbox_shimmer_subtitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_shimmer_title"
        app:layout_constraintStart_toStartOf="@id/talk_inbox_shimmer_title"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_inbox_body"
        android:layout_width="@dimen/dp_204"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_shimmer_subtitle"
        app:layout_constraintStart_toStartOf="@id/talk_inbox_shimmer_title"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/talk_inbox_body_2"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_body"
        app:layout_constraintStart_toStartOf="@id/talk_inbox_shimmer_title"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/talk_inbox_body_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>