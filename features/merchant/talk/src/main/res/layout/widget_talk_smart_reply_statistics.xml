<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/layout_lvl2"
    android:layout_marginEnd="@dimen/layout_lvl2"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toBottomOf="@id/talk_smart_reply_performance_subtitle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_12">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/talk_smart_reply_total_discussion_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            app:icon_name="DISCUSSION"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/talk_smart_reply_total_discussion_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:text="@string/smart_reply_total_discussions_replied_label"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            app:layout_constraintTop_toTopOf="@id/talk_smart_reply_total_discussion_icon"
            app:layout_constraintBottom_toBottomOf="@id/talk_smart_reply_total_discussion_icon"
            app:layout_constraintStart_toEndOf="@id/talk_smart_reply_total_discussion_icon"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/talkSmartReplyTotalDiscussionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginEnd="@dimen/dp_12"
            android:textColor="@color/Unify_N700_32"
            app:typographyWeight="bold"
            app:typographyType="heading_5"
            app:layout_constraintTop_toTopOf="@id/talk_smart_reply_total_discussion_icon"
            app:layout_constraintBottom_toBottomOf="@id/talk_smart_reply_total_discussion_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="420+"/>

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/talk_smart_reply_total_discussion_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/talk_smart_reply_total_discussion_icon"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/talk_smart_reply_average_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/dp_12"
            app:icon_name="FLASH_SALE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/talk_smart_reply_total_discussion_divider" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/talk_smart_reply_average_time_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:text="@string/smart_reply_speed_label"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            app:layout_constraintTop_toTopOf="@id/talk_smart_reply_average_time_icon"
            app:layout_constraintBottom_toBottomOf="@id/talk_smart_reply_average_time_icon"
            app:layout_constraintStart_toEndOf="@id/talk_smart_reply_average_time_icon"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/talkSmartReplyAverageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginEnd="@dimen/dp_12"
            android:textColor="@color/Unify_N700_32"
            app:typographyWeight="bold"
            app:typographyType="heading_5"
            app:layout_constraintTop_toTopOf="@id/talk_smart_reply_average_time_icon"
            app:layout_constraintBottom_toBottomOf="@id/talk_smart_reply_average_time_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="69s"/>

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/talk_smart_reply_average_time_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_12"
            app:layout_constraintTop_toBottomOf="@id/talk_smart_reply_average_time_icon"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/talk_smart_reply_percentage_replied_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/dp_12"
            app:icon_name="GRAPH"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/talk_smart_reply_average_time_divider" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/talk_smart_reply_percentage_replied_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:text="@string/smart_reply_percentage_replied_label"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            app:layout_constraintTop_toTopOf="@id/talk_smart_reply_percentage_replied_icon"
            app:layout_constraintBottom_toBottomOf="@id/talk_smart_reply_percentage_replied_icon"
            app:layout_constraintStart_toEndOf="@id/talk_smart_reply_percentage_replied_icon"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/talkSmartReplyPercentageReplied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginEnd="@dimen/dp_12"
            android:textColor="@color/Unify_N700_32"
            app:typographyWeight="bold"
            app:typographyType="heading_5"
            app:layout_constraintTop_toTopOf="@id/talk_smart_reply_percentage_replied_icon"
            app:layout_constraintBottom_toBottomOf="@id/talk_smart_reply_percentage_replied_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="69%"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>