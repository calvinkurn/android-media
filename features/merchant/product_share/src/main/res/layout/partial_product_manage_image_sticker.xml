<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_source"
        android:contentDescription="@string/content_desc_image_source"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_sticker"
        android:orientation="vertical"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/img_source"
        app:layout_constraintRight_toRightOf="@id/img_source">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_36">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_green_sticker"
                android:paddingBottom="4dp"
                android:paddingLeft="72dp"
                android:paddingRight="20dp"
                android:paddingTop="4dp"
                tools:text="Rp 520.000"
                app:typographyType="heading_1"
                android:textColor="@color/Unify_NN0" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/content_desc_sticker"
                app:srcCompat="@drawable/ic_sticker_toped" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_cashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                tools:text="Cashback 3%"
                android:textColor="@color/Unify_NN0"
                app:typographyType="heading_2"
                android:layout_toRightOf="@id/tv_price" />

        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/Unify_NN0"
            android:textSize="34sp"
            android:textStyle="bold"
            android:shadowColor="@color/Unify_NN950_32"
            android:shadowRadius="5"
            android:shadowDy="5"
            android:shadowDx="5"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shop_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/Unify_NN0"
            android:textSize="22sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>