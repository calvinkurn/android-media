<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.product.detail.common">

    <application>
        <activity
            android:name=".view.ProductDetailGalleryActivity"
            android:label="@string/pdp_common_gallery_label"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name="com.tokopedia.product.detail.bsinfo.view.ProductEducationalActivity"
            android:label="@string/pdp_common_educational_label"
            android:theme="@style/Theme.AppCompat.DayNight.Translucent"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_product_educational"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
    </application>
</manifest>
