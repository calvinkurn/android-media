query getPDPInfo($productID:Int, $shopDomain: String, $productKey: String){
    getPDPInfo(productID: $productID, shopDomain: $shopDomain, productKey: $productKey){
        basic {
            id
            shopID
            name
            alias
            price
            priceCurrency
            lastUpdatePrice
            description
            minOrder
            maxOrder
            status
            stock
            weight
            weightUnit
            condition
            url
            sku
            gtin
            isKreasiLokal
            isMustInsurance
            isEligibleCOD
            isFreeReturn
            isCatalogID
        }
        returnInfo {
            icon
            colorHex
            colorRgb
            content
        }
        brand {
            brandID
            isActive
            name
        }
        catalog {
            id
            is_active
            name
            url
        }
        menu {
            menuID
            name
            url
        }
        category {
            id
            name
            title
            breadcrumbURL
            detail {
                id
                name
                breadcrumbURL
            }
        }
        pictures {
            picID
            fileName
            filePath
            description
            isFromIG
            width
            height
            urlOriginal
            urlThumbnail
            url300
            status
        }
        preorder {
            isActive
            duration
            timeUnit
        }
        wholesale {
            minQty
            maxQty
            price
        }
        campaign {
            campaignID
            campaignType
            isActive
            isAppsOnly
            campaignTypeName
            originalPrice
            percentageAmount
            stock
            startDate
            endDate
            endDateUnix
            applinks
        }
        cashback {
            percentage
        }
        stats {
            countView
            countReview
            countTalk
            rating
        }
        txStats {
            txSuccess
            txReject
            itemSold
        }
    }
}