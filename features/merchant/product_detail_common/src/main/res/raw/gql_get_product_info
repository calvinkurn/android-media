            countTalk
            rating
        }
        txStats {
            txSuccess
            txReject
            itemSold
        }
        videos {
            source
            url
        }
        variant {
          parentID
          isVariant
        }
        stock {
          useStock
          value
          stockWording
        }
        media {
          type
          URL300
          URLOriginal
          URLThumbnail
          IsAutoplay
          Description
          VideoURLAndroid
         }
        freeOngkir {
          isActive
          imgURL
        }
    }
   	topAdsGetProductManage(type:1, shop_id:$shopID, item_id:$productID){
			data {
			  ad_id
			  ad_type
			  is_enable_ad
			  item_id
