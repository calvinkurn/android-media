query getProductVariant($productID:String!, $userID: String, $includeCampaign: Boolean){
    GetProductVariant(productID: $productID, option:{userID:$userID, includeCampaign:$includeCampaign}){
    ParentID
    DefaultChild
    SizeChart
    Enabled
    AlwaysAvailable
    Stock
    Variant {
      Name
      Identifier
      UnitName
      Position
      VariantID
      VariantUnitID
      ProductVariantID
      Option {
        Value
        Hex
        ProductVariantOptionID
        VariantUnitValueID
        Picture {
          URL
          URL200
        }
      }
    }
    Children {
      ProductID
      Price
      PriceFmt
      SKU
      OptionID
      ProductName
      ProductURL
      IsCOD
      IsWishlist
      Enabled
      CampaignInfo{
        CampaignID
        IsActive
        OriginalPrice
        OriginalPriceFmt
        DiscountPercentage
        DiscountPrice
        DiscountPriceFmt
        CampaignType
        CampaignTypeName
        StartDate
        EndDate
        Stock
        AppLinks
        IsAppsOnly
      }
      Stock {
        IsLimitedStock
        StockWording
        StockWordingHTML
        OtherVariantStock
        MinimumOrder
        MaximumOrder
      }
      Picture {
        URL
        URL200
      }
    }
  }
}