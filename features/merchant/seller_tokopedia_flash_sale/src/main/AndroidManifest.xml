<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.seller_tokopedia_flash_sale">

    <application>
        <activity
            android:name="com.tokopedia.tkpd.flashsale.presentation.list.container.FlashSaleListActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:label="@string/fs_tkpd_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify">

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_sellerapp"
                    android:pathPattern="@string/path_seller_tokopedia_flash_sale"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tokopedia.tkpd.flashsale.presentation.detail.CampaignDetailActivity"
            android:theme="@style/Theme.WhiteUnify"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name="com.tokopedia.tkpd.flashsale.presentation.chooseproduct.ChooseProductActivity"
            android:theme="@style/Theme.WhiteUnify"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name="com.tokopedia.tkpd.flashsale.presentation.manageproduct.nonvariant.ManageProductNonVariantActivity"
            android:theme="@style/Theme.WhiteUnify"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name="com.tokopedia.tkpd.flashsale.presentation.manageproduct.variant.singlelocation.ManageProductVariantActivity"
            android:exported="false"
            android:theme="@style/Theme.WhiteUnify"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tokopedia.tkpd.flashsale.presentation.manageproductlist.FlashSaleManageProductListActivity"
            android:theme="@style/Theme.WhiteUnify"
            android:screenOrientation="portrait"
            android:exported="false" />

    </application>

</manifest>