<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tokopedia.tkpd.flashsale.presentation.ineligibleaccess.IneligibleAccessFragment">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:unify_header_title="@string/fs_tkpd_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_header_is_show_shadow="false"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_ineligible_access"
        android:layout_width="230dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.30" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_title_ineligible_access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/stfs_title_ineligible_access"
        app:layout_constraintEnd_toEndOf="@+id/img_ineligible_access"
        app:layout_constraintStart_toStartOf="@+id/img_ineligible_access"
        app:layout_constraintTop_toBottomOf="@+id/img_ineligible_access"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_desc_ineligible_access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="@string/stfs_desc_ineligible_access"
        app:layout_constraintEnd_toEndOf="@+id/tpg_title_ineligible_access"
        app:layout_constraintStart_toStartOf="@+id/tpg_title_ineligible_access"
        app:layout_constraintTop_toBottomOf="@+id/tpg_title_ineligible_access"
        app:typographyType="paragraph_2"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_go_to_learn_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/stfs_btn_go_to_learn_voucher_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>