<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iconProcess"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/stfs_bg_circle_timeline"
        android:padding="6dp"
        app:icon_color_light_enable="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tfProcess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconProcess"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="paragraph_3"
        tool:text="Periode Pendaftaran" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tfPeriod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconProcess"
        app:layout_constraintTop_toBottomOf="@+id/tfProcess"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tool:text="4 - 6 Jul 2022" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tfProcessCenter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconProcess"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="paragraph_3"
        tool:text="Periode Pendaftaran" />

</androidx.constraintlayout.widget.ConstraintLayout>