<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.5"/>

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfCategoryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textvalue_title="Kategori"
        tool:textvalue_value="A, B, C" />

    <!-- =========================================================== -->
    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfOriginalPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfCategoryList"
        app:textvalue_title="Kisaran Harga Awal"
        tool:textvalue_value="Rp999.999.999 - Rp999.999.999" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfDiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_content"
        app:layout_constraintTop_toBottomOf="@+id/tfCategoryList"
        app:textvalue_title="Min. Diskon"
        tool:textvalue_value="80%" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divRow1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tfOriginalPrice" />
    <!-- =========================================================== -->

    <!-- =========================================================== -->
    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfDiscountedPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divRow1"
        app:textvalue_title="Kisaran Harga Akhir"
        tool:textvalue_value="Rp999.999.999 - Rp999.999.999" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfCampaignStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_content"
        app:layout_constraintTop_toTopOf="@+id/divRow1"
        app:textvalue_title="Stok Campaign"
        tool:textvalue_value="80%" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divRow2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tfDiscountedPrice" />
    <!-- =========================================================== -->

    <!-- =========================================================== -->
    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfMinRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divRow2"
        app:textvalue_title="Min. Rating"
        app:textvalue_icon_visibility="true"
        tool:textvalue_value="Rp999.999.999 - Rp999.999.999" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfMinScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_content"
        app:layout_constraintTop_toTopOf="@+id/divRow2"
        app:textvalue_title="Min. Skor Produk"
        tool:textvalue_value="80%" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divRow3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tfMinRating" />
    <!-- =========================================================== -->

    <!-- =========================================================== -->
    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfProductSold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divRow3"
        app:textvalue_title="Produk Terjual"
        tool:textvalue_value="Rp999.999.999 - Rp999.999.999" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfMinProductSold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_content"
        app:layout_constraintTop_toTopOf="@+id/divRow3"
        app:textvalue_title="Min. Pembelian"
        tool:textvalue_value="80%" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divRow4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tfProductSold" />
    <!-- =========================================================== -->

    <!-- =========================================================== -->
    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfSubmissionLimit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guideline_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divRow4"
        app:textvalue_title="Batas Pengajuan Produk"
        tool:textvalue_value="Rp999.999.999 - Rp999.999.999" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfMaxShown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_content"
        app:layout_constraintTop_toTopOf="@+id/divRow4"
        app:textvalue_title="Maks. Tampil"
        tool:textvalue_value="80%" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divRow5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tfSubmissionLimit" />
    <!-- =========================================================== -->

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfOtherCriteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/divRow5"
        app:textvalue_title="Kriteria Khusus"
        tool:textvalue_value="Rp999.999.999 - Rp999.999.999" />

</androidx.constraintlayout.widget.ConstraintLayout>