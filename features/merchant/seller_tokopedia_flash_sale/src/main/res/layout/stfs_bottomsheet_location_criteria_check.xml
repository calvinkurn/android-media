<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tool="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerUnify"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tfProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        android:layout_marginHorizontal="16dp"
        app:typographyType="paragraph_3"
        android:text="@string/commonbs_criteria_check_description" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResult"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        tool:listitem="@layout/stfs_item_location_criteria_result"
        app:layout_constraintTop_toBottomOf="@+id/divProduct" />

</androidx.appcompat.widget.LinearLayoutCompat>