<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:flexDirection="row"
    app:flexWrap="wrap"
    app:flow_wrapMode="chain"
    xmlns:tool="http://schemas.android.com/tools">

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfOriginalPrice"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_original_price_field_title"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfMinRating"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_rating_visibility="true"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_min_rating_field_title"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfSoldProduct"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_sold_product_field_title"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfMaxShown"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_limited"
        app:textvalue_title="@string/commonbs_criteria_check_max_shown_field_title"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfCampaignStock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_campaign_stock_field_title"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfMinProductScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_min_score_field_title"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfMinBuy"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_min_buy_field_title"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfOtherCriteriaCondition"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_other_criteria_field_title"
        app:textvalue_value="Baru" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfOtherCriteriaWholesale"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_other_criteria_field_title"
        app:textvalue_value="Grosir" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfOtherCriteriaReadyStock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_other_criteria_field_title"
        app:textvalue_value="Ready Stok" />

    <com.tokopedia.tkpd.flashsale.presentation.common.customview.TitleValueView
        android:id="@+id/tfOtherCriteriaFreeOngkir"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="@string/commonbs_field_required"
        app:textvalue_title="@string/commonbs_criteria_check_other_criteria_field_title"
        app:textvalue_value="Free Ongkir" />

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/tickerMultiloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        app:closeButtonVisibility="gone"
        app:tickerShapeType="loose"
        app:tickerType="warning"
        tool:descriptionText="2 lokasi tidak sesuai kriteria. Cek Detail Per Lokasi" />

</com.google.android.flexbox.FlexboxLayout>