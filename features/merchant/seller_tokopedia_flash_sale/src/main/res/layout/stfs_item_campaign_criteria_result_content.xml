<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!--left views-->

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfOriginalPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="Diwajibkan"
        app:textvalue_title="Kisaran Harga Awal"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfMinRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfOriginalPrice"
        app:textvalue_icon_rating_visibility="true"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="Diwajibkan"
        app:textvalue_title="Min. Rating"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfSoldProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfMinRating"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="Diwajibkan"
        app:textvalue_title="Produk Terjual"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfMaxShown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfSoldProduct"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="Dibatasi"
        app:textvalue_title="Maks. Tampil"
        tool:textvalue_value="80-100" />

    <!--right views-->

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfCampaignStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="Diwajibkan"
        app:textvalue_title="Stok Campaign"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfMinProductScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@+id/tfOriginalPrice"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="Diwajibkan"
        app:textvalue_title="Min. Skor Produk"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfMinBuy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@+id/tfMinRating"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="Diwajibkan"
        app:textvalue_title="Min. Pembelian"
        tool:textvalue_value="80-100" />

    <com.tokopedia.tkpd.flashsale.common.customview.TitleValueView
        android:id="@+id/tfOtherCriteria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@+id/tfSoldProduct"
        app:textvalue_icon_status="PASSED"
        app:textvalue_subtitle="Diwajibkan"
        app:textvalue_title="Kriteria Khusus"
        tool:textvalue_value="80-100" />

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/tickerMultiloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        app:closeButtonVisibility="gone"
        app:tickerType="warning"
        app:tickerShapeType="loose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfMaxShown"
        tool:descriptionText="2 lokasi tidak sesuai kriteria. Cek Detail Per Lokasi" />

</androidx.constraintlayout.widget.ConstraintLayout>