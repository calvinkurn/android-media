<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_register_period_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_12"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="Periode pendaftaran" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_register_period_info"
        android:layout_width="@dimen/unify_space_16"
        android:layout_height="@dimen/unify_space_16"
        android:layout_marginStart="@dimen/unify_space_4"
        app:icon_name="INFORMATION"
        app:layout_constraintBottom_toBottomOf="@+id/tg_register_period_label"
        app:layout_constraintStart_toEndOf="@+id/tg_register_period_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_register_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toBottomOf="@+id/tg_register_period_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tg_register_period_label"
        app:typographyType="body_3"
        tools:text="30 Jun - 3 Jul 2022" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_campaign_quota_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_12"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_register_period_label"
        app:typographyType="body_3"
        tools:text="Kuota Campaign" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_campaign_quota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toBottomOf="@+id/tg_campaign_quota_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tg_campaign_quota_label"
        app:typographyType="body_3"
        tools:text="Sisa 50 kuota!" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_campaign_criteria_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/unify_space_12"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_campaign_quota_label"
        app:typographyType="body_3"
        tools:text="Kriteria Campaign" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/btn_see_criteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:paddingTop="@dimen/unify_space_4"
        android:paddingBottom="@dimen/unify_space_4"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintBottom_toBottomOf="@+id/tg_campaign_criteria_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tg_campaign_criteria_label"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Lihat Kriteria" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_mid"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_see_criteria" />

</androidx.constraintlayout.widget.ConstraintLayout>