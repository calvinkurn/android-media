<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_left"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:loader_type="rect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_middle"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/shimmer_left"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_right"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/shimmer_middle"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_left">

        <include
            layout="@layout/shop_discount_product_detail_shimmering_item_layout"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/shop_discount_product_detail_shimmering_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="40dp" />

        <include
            layout="@layout/shop_discount_product_detail_shimmering_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="40dp" />

        <include
            layout="@layout/shop_discount_product_detail_shimmering_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="40dp" />

        <include
            layout="@layout/shop_discount_product_detail_shimmering_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="40dp" />

        <include
            layout="@layout/shop_discount_product_detail_shimmering_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="40dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>