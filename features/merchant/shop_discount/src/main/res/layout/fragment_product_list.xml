<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:card_type="clear"
    tools:context=".manage.presentation.list.ProductListFragment">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgTotalProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        tools:text="80 Produk"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="@dimen/unify_space_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgMultiSelect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sd_multi_select"
        android:textColor="@color/Unify_G500"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:visibility="gone"
        android:layout_marginTop="@dimen/unify_space_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/unify_space_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tpgTotalProduct">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="3"
            tools:listitem="@layout/sd_item_product" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <com.tokopedia.globalerror.GlobalError
        android:id="@+id/globalError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:globalerrors_type="SERVER_ERROR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.empty_state.EmptyStateUnify
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unifyEmptyStateDescription="Coba ulangi pencarian dengan kata kunci atau filter lain, ya."
        app:unifyEmptyStateImageUrl="https://ecs7.tokopedia.net/android/merchant_voucher/il_mvc_no_result.webp"
        app:unifyEmptyStateOrientation="horizontal"
        app:unifyEmptyStateTitle="Kupon yang kamu cari nggak ditemukan"
        app:unifyEmptyStateType="section" />


</androidx.constraintlayout.widget.ConstraintLayout>
