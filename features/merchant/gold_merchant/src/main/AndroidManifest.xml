<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.tokopedia.gm">

    <application
        android:allowBackup="true"
        android:label="@string/app_name">
        <activity
            android:name=".statistic.view.activity.GMStatisticDashboardActivity"
            android:label="@string/gm_statistic_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Tokopedia3">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_gold_merchant_statistic_dashboard"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".statistic.view.activity.GMStatisticTransactionActivity"
            android:exported="true"
            android:label="@string/gm_statistic_transaction_label" />
        <activity
            android:name=".statistic.view.activity.GMStatisticTransactionTableActivity"
            android:exported="true"
            android:label="@string/list_sold_product_text" />
        <activity
            android:name=".statistic.view.activity.GMStatisticDatePickerActivity"
            android:exported="true"
            android:label="@string/title_date_setting" />
        <activity
            android:name=".featured.view.activity.GMFeaturedProductActivity"
            android:exported="true"
            android:label="@string/featured_product_title" >
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_gold_merchant_featured_product"/>
            </intent-filter>
        </activity>
    </application>
</manifest>