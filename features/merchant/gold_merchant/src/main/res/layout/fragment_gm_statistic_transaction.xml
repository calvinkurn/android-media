<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_med">

        <com.tokopedia.design.label.DateLabelView
            android:id="@+id/date_label_view"
            style="@style/LabelLayout.BorderBottom" />

        <com.tokopedia.design.card.TitleCardView
            android:id="@+id/gold_merchant_statistic_card_view"
            style="@style/CardViewLayoutMatchParent"
            android:layout_marginBottom="@dimen/margin_med"
            android:layout_marginTop="@dimen/margin_med"
            app:tcv_error_layout="@layout/partial_gm_statistic_error_card"
            app:tcv_loading_layout="@layout/widget_line_chart_container_loading">

            <com.tokopedia.gm.statistic.view.widget.LineChartContainerWidget
                android:id="@+id/gold_merchant_line_chart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/gmstat_padding_item_left_right"
                android:paddingLeft="@dimen/gmstat_padding_item_left_right"
                android:paddingRight="@dimen/gmstat_padding_item_left_right"
                android:paddingTop="8dp">

                <com.tokopedia.seller.common.williamchart.view.LineChartView
                    android:id="@+id/gm_statistic_transaction_income_graph"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />
            </com.tokopedia.gm.statistic.view.widget.LineChartContainerWidget>

        </com.tokopedia.design.card.TitleCardView>

        <com.tokopedia.design.card.TitleCardView
            android:id="@+id/not_done_trans_statistic_card_view"
            style="@style/CardViewLayoutMatchParent"
            android:layout_marginBottom="20dp"
            app:tcv_error_layout="@layout/partial_gm_statistic_error_card"
            app:tcv_loading_layout="@layout/item_loading_gmstat_pie_chart"
            app:tcv_title="@string/gm_statistic_unfinished_transaction_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/gm_unfinished_margin_top">

                <com.tokopedia.gm.statistic.view.widget.circleprogress.DonutProgressLayout
                    android:id="@+id/gm_statistic_trans_donut_progress_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/gm_unfinished_margin_top"
                    app:donut_pl_amount_text_size="32sp"
                    app:donut_pl_title="@string/gm_statistic_total_trans_text"
                    app:donut_pl_title_text_size="14sp">

                    <com.tokopedia.gm.statistic.view.widget.circleprogress.DonutProgress
                        android:id="@+id/gm_statistic_trans_donut_progress"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:donut_circle_starting_degree="90"
                        app:donut_finished_color="@color/tkpd_main_green"
                        app:donut_finished_stroke_width="8dp"
                        app:donut_max="100"
                        app:donut_progress="0"
                        app:donut_show_text="false"
                        app:donut_unfinished_color="@color/tkpd_main_orange"
                        app:donut_unfinished_stroke_width="8dp" />
                </com.tokopedia.gm.statistic.view.widget.circleprogress.DonutProgressLayout>

                <include layout="@layout/partial_gm_statistic_donut_legend" />

            </LinearLayout>
        </com.tokopedia.design.card.TitleCardView>

        <com.tokopedia.design.card.TitleCardView
            android:id="@+id/topads_statistic_card_view"
            style="@style/CardViewLayoutMatchParent"
            app:tcv_empty_layout="@layout/partial_gm_statistic_transaction_top_ads_empty_state"
            app:tcv_error_layout="@layout/partial_gm_statistic_error_card"
            app:tcv_title="@string/gm_statistic_top_ads_amount_title_text"
            app:tcv_loading_layout="@layout/widget_line_chart_container_loading">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/gmstat_padding_item_left_right"
                android:paddingRight="@dimen/gmstat_padding_item_left_right">

                <com.tokopedia.gm.statistic.view.widget.LineChartContainerWidget
                    android:id="@+id/topads_line_chart_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    app:subtitle="@string/gm_statistic_top_ads_amount_subtitle_text">

                    <com.tokopedia.seller.common.williamchart.view.LineChartView
                        android:id="@+id/gm_statistic_topads_graph"
                        android:layout_width="match_parent"
                        android:layout_height="240dp" />
                </com.tokopedia.gm.statistic.view.widget.LineChartContainerWidget>

                <Button
                    android:id="@+id/button_see_top_ads"
                    style="@style/Button.Submit.White"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/bg_rect_stroke_lighter_gray"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/gm_unfinished_margin_top"
                    android:text="@string/gm_statistic_manage_topads" />
            </LinearLayout>

        </com.tokopedia.design.card.TitleCardView>

        <android.support.v7.widget.CardView
            style="@style/CardViewLayoutMatchParent"
            android:layout_marginTop="@dimen/margin_med">

            <com.tokopedia.seller.common.widget.LabelView
                android:id="@+id/gm_statistic_label_sold_product_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:content_color="@color/tkpd_main_green"
                app:title="@string/gm_statistic_sold_product_list_text" />
        </android.support.v7.widget.CardView>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
