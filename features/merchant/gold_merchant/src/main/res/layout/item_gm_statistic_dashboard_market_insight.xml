<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/market_insight_keyword"
        style="@style/TextView.Small"
        tools:text="@string/app_id" />

    <TextView
        android:id="@+id/market_insight_number"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        tools:text="@string/app_id" />

    <ImageView
        android:id="@+id/zoom_icon"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:layout_alignBottom="@id/market_insight_number"
        android:layout_marginBottom="@dimen/margin_vs"
        android:layout_marginEnd="@dimen/margin_vs"
        android:layout_marginRight="@dimen/margin_vs"
        android:layout_toLeftOf="@id/market_insight_number"
        app:srcCompat="@drawable/ic_search_white" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/market_insight_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@id/market_insight_keyword"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_vs"
        app:rcBackgroundColor="@color/black_12"
        app:rcBackgroundPadding="2dp"
        app:rcMax="100"
        app:rcProgress="90"
        app:rcProgressColor="#f6b323"
        app:rcRadius="20dp" />
</RelativeLayout>
