<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2" />
    <!-- Untuk onRetry satu halaman -->
    <ImageView
        android:id="@+id/no_result_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:minWidth="200dp"
        android:minHeight="200dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_15"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/text_view_empty_title_text"
        style="@style/TextView.Title"
        android:layout_margin="@dimen/dp_3"
        android:gravity="center"
        android:maxWidth="@dimen/dp_250"
        app:weight="medium"
        app:fontSize="titleBig"
        tools:text="ajasjd aiahkshj akshdkhkusdi" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/text_view_empty_content_text"
        style="@style/TextView.Small.BlackSecondary"
        app:fontSize="micro"
        android:layout_margin="@dimen/dp_3"
        android:gravity="center"
        android:maxLines="4"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="jsdjjdjhds jsjdjsjsj kihakshkjsadjs sugdjghsadhsahdghsagdh hjashasg" />

    <TextView
        android:id="@+id/text_view_empty_content_item_text"
        style="@style/TextView.Small.Green"
        android:layout_margin="@dimen/dp_20"
        android:visibility="gone"
        tools:text="@string/app_name" />

    <!-- text will be override programmatically -->
    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/button_add_promo"
        style="@style/Button.Submit.Green.Full"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        tools:text="Button Text"
        android:layout_marginTop="@dimen/dp_32"
        app:buttonCompatSize="big"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
