<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gm_featured_container"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/ic_drag_and_drop_gm_featured_product_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ic_drag_and_drop_gm_featured_product"
            android:layout_width="9dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_group" />
    </FrameLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ic_gm_featured_product"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toEndOf="@id/ic_drag_and_drop_gm_featured_product_container"
        android:layout_toRightOf="@id/ic_drag_and_drop_gm_featured_product_container"
        tools:src="@drawable/ic_badge_official" />

    <LinearLayout
        android:id="@+id/gm_featured_product_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ic_gm_featured_product"
        android:layout_toLeftOf="@+id/check_box"
        android:layout_toRightOf="@id/ic_gm_featured_product"
        android:layout_toStartOf="@+id/check_box"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_product_name_gm_featured_product"
            style="@style/TextView.Small"
            tools:text="Tas selempang wanita bulat merah Good Things by Olympicto bahan Kanvas" />

        <TextView
            android:id="@+id/text_price_gm_featured_product"
            style="@style/TextView.Small.BlackSecondary"
            android:layout_marginTop="@dimen/margin_small"
            tools:text="Rp. 500" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/check_box_margin"
        android:layout_marginRight="@dimen/check_box_margin"
        android:theme="@style/checkBoxStyleSeller" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_gray" />
</RelativeLayout>