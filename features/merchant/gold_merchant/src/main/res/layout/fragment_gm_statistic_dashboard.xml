<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_gmstat"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/parent_fragment_gmstat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.design.label.DateLabelView
            android:id="@+id/date_label_view"
            style="@style/LabelLayout.BorderBottom" />

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/margin_sm"
            style="@style/CardViewLayoutMatchParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/bg_line_separator"
                android:orientation="vertical"
                android:showDividers="middle">

                <include layout="@layout/partial_gm_statistic_dashboard_summary_view_holder" />

                <include layout="@layout/partial_gm_statistic_dashboard_gross_view_holder" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <com.tokopedia.design.card.TitleCardView
            android:id="@+id/popular_product_card_view"
            style="@style/CardViewLayoutMatchParent"
            android:layout_marginTop="@dimen/margin_sm"
            app:tcv_empty_layout="@layout/partial_gm_statistic_popular_product_empty_state"
            app:tcv_error_layout="@layout/partial_gm_statistic_error_card"
            app:tcv_loading_layout="@layout/partial_gm_statistic_popular_product_loading"
            app:tcv_title="@string/gm_statistic_product_data"
            app:tcv_title_text_size="@dimen/sp_14">

            <include layout="@layout/partial_gm_statistic_popular_product_content" />

        </com.tokopedia.design.card.TitleCardView>

        <com.tokopedia.design.card.TitleCardView
            android:id="@+id/transaction_data_card_view"
            android:layout_marginTop="@dimen/margin_sm"
            app:tcv_error_layout="@layout/partial_gm_statistic_error_card"
            app:tcv_loading_layout="@layout/partial_gm_statistic_transaction_data_loading"
            app:tcv_title="@string/gm_statistic_sales_data"
            app:tcv_title_text_size="@dimen/sp_14"
            style="@style/CardViewLayoutMatchParent">

            <include layout="@layout/partial_gm_statistic_transaction_content" />

        </com.tokopedia.design.card.TitleCardView>

        <com.tokopedia.design.card.TitleCardView
            android:id="@+id/buyer_data_card_view"
            android:layout_marginTop="@dimen/margin_sm"
            app:tcv_error_layout="@layout/partial_gm_statistic_error_card"
            app:tcv_loading_layout="@layout/widget_buyer_data_loading"
            app:tcv_title="@string/gm_statistic_buyer_data"
            app:tcv_title_text_size="@dimen/sp_14"
            style="@style/CardViewLayoutMatchParent">

            <include layout="@layout/widget_buyer_data_content" />

        </com.tokopedia.design.card.TitleCardView>

        <com.tokopedia.design.card.TitleCardView
            android:id="@+id/market_insight_card_view"
            android:layout_marginBottom="@dimen/margin_sm"
            android:layout_marginTop="@dimen/margin_sm"
            app:tcv_error_layout="@layout/partial_gm_statistic_error_card"
            app:tcv_loading_layout="@layout/partial_gm_statistic_market_insight_loading"
            app:tcv_title="@string/gm_statistic_market_insight"
            app:tcv_title_text_size="@dimen/sp_14"
            style="@style/CardViewLayoutMatchParent">

            <include layout="@layout/partial_gm_statistic_market_insight_content" />

        </com.tokopedia.design.card.TitleCardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
