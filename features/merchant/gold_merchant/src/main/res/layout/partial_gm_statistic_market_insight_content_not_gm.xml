<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_card_not_gm"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_20"
    android:paddingLeft="@dimen/dp_40"
    android:paddingRight="@dimen/dp_40"
    android:paddingTop="@dimen/dp_20"
    android:visibility="gone"
    android:id="@+id/vg_market_insight_not_gm">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_lock"
            android:layout_width="27dp"
            android:layout_height="33dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_lock_icon_again" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/text_view_overlay_description"
            style="@style/TextView.Micro.WhitePrimary"
            android:layout_marginLeft="@dimen/dp_2"
            android:gravity="center"
            tools:text="@string/gm_statistic_get_access_to_see_gm_stat"
            android:textAlignment="center" />
    </LinearLayout>

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/button_redirect_to"
        style="@style/Button.Submit.Green.Full"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/gm_statistic_upgrade_shop"
        android:layout_marginTop="@dimen/dp_12"
        app:buttonCompatSize="big"
        />
</LinearLayout>
