<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticker_yellow_idle_pm_warning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@color/transparent"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ticker_yellow"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_ticker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f531353b"
                app:fontSize="small"
                app:weight="medium"
                tools:text="Title" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_ticker_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f531353b"
                app:fontSize="micro"
                tools:text="Description" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ticker_warning_cropped" />
    </android.support.v7.widget.CardView>
</FrameLayout>

