<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_not_gm"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_40"
    android:paddingTop="@dimen/dp_20"
    android:paddingRight="@dimen/dp_40"
    android:paddingBottom="@dimen/dp_20"
    android:visibility="gone">

    <ImageView
        android:id="@+id/image_view_overlay"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitXY" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/text_view_overlay_description"
        style="@style/TextView.Micro.WhitePrimary"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:textAlignment="center"
        tools:text="@string/gm_statistic_get_access_to_see_gm_stat" />

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/button_redirect_to"
        style="@style/Button.Submit.Green.Full"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="@dimen/dp_24"
        app:buttonCompatSize="big"
        tools:text="Button Text" />
</LinearLayout>
