<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewShcLastUpdatedContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone"
    tools:visibility="visible">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icShcRefreshLastUpdated"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/bg_shc_shadow_circle"
        android:padding="6dp"
        android:visibility="gone"
        app:icon_name="RELOAD"
        tools:visibility="invisible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcLastUpdated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/Unify_NN600"
        app:typographyType="body_3"
        tools:text="Update terakhir hari ini, 15:00 WIB" />
</LinearLayout>