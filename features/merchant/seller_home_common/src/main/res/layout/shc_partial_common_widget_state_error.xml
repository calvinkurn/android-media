<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commonWidgetErrorState"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgWidgetOnError"
        android:layout_width="@dimen/shc_dimen_110dp"
        android:layout_height="@dimen/shc_dimen_80dp"
        tools:src="@drawable/unify_globalerrors_connection" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/shc_failed_to_load_information"
        android:textAlignment="center"
        android:textColor="@color/Unify_N700_96"
        android:textSize="@dimen/fontSize_lvl3"
        app:typographyWeight="bold" />
</LinearLayout>