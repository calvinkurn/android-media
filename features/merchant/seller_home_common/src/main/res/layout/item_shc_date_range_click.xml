<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/shc_dimen_date_filter_height"
    android:paddingStart="16dp"
    android:paddingEnd="0dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvStcDateRangeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN900"
        app:layout_constraintBottom_toTopOf="@+id/tvStcDefaultDateRange"
        app:layout_constraintEnd_toStartOf="@+id/radStcDefaultDateRange"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="7 hari terakhir" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvStcDefaultDateRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN600"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/verLineStcDefault"
        app:layout_constraintEnd_toStartOf="@+id/radStcDefaultDateRange"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStcDateRangeLabel"
        app:typographyType="display_3"
        tools:text="17 - 23 April 2020" />

    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
        android:id="@+id/radStcDefaultDateRange"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layoutDirection="ltr"
        app:layout_constraintBottom_toBottomOf="@+id/tvStcDefaultDateRange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvStcDateRangeLabel" />

    <View
        android:id="@+id/verLineStcDefault"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_NN300"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>