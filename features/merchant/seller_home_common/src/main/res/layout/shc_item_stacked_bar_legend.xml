<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShcStackedBarLegend"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/ic_shc_tooltip_chart_dot"
        app:layout_constraintTop_toTopOf="@id/tvShcStackedBarLegendTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvShcStackedBarLegendTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcStackedBarLegendTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toEndOf="@id/ivShcStackedBarLegend"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="reguler"
        tools:text="PLUS"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcStackedBarLegendValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvShcStackedBarLegendTitle"
        app:layout_constraintStart_toStartOf="@id/ivShcStackedBarLegend"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Rp1.000.000"/>

</androidx.constraintlayout.widget.ConstraintLayout>