<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shcMlgLoadingState"
    android:layout_width="match_parent"
    android:layout_height="@dimen/shc_super_large_widget_height"
    android:visibility="gone"
    tools:visibility="visible">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmerShcTitle"
        android:layout_width="@dimen/shc_dimen_120dp"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardShcShimmer0"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/shc_dimen_12dp"
        android:layout_marginTop="@dimen/shc_dimen_12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/cardShcShimmer1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerShcTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/shc_dimen_80dp"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/shc_dimen_10dp"
                app:corners="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/shc_dimen_110dp"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/layout_lvl1"
                android:layout_marginBottom="@dimen/layout_lvl3"
                app:corners="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardShcShimmer1"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/shc_dimen_12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardShcShimmer0"
        app:layout_constraintTop_toTopOf="@+id/cardShcShimmer0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/shc_dimen_80dp"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/shc_dimen_10dp"
                app:corners="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="@dimen/shc_dimen_110dp"
                android:layout_height="@dimen/layout_lvl2"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/layout_lvl1"
                android:layout_marginBottom="@dimen/layout_lvl3"
                app:corners="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shcLoaderMultiLineGraph"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardShcShimmer1" />
</androidx.constraintlayout.widget.ConstraintLayout>