<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:descendantFocusability="blocksDescendants"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/shcPostListSuccessView"
            layout="@layout/shc_partial_post_list_widget" />

        <include
            android:id="@+id/shcPostListLoadingView"
            layout="@layout/shc_partial_shimmering_post_list_widget"
            tools:visibility="gone" />

        <include
            android:id="@+id/shcPostListErrorView"
            layout="@layout/shc_partial_post_list_widget_error"
            tools:visibility="gone" />

    </com.tokopedia.unifycomponents.CardUnify>
</androidx.constraintlayout.widget.ConstraintLayout>