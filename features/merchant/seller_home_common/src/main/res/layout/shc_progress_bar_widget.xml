<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_progress_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/shc_line_spacing_6"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toBottomOf="@id/tv_current_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_current_progress"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="@string/shc_score" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_current_progress"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:lineSpacingExtra="@dimen/shc_line_spacing_6"
        android:textColor="@color/Unify_G500"
        app:layout_constraintEnd_toStartOf="@id/tv_max_progress"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        tools:text="80" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_max_progress"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:lineSpacingExtra="@dimen/shc_line_spacing_6"
        android:text="@string/shc_max_progress"
        android:textColor="@color/Unify_N700_32"
        app:layout_constraintBottom_toBottomOf="@id/tv_current_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_current_progress"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <View
        android:id="@+id/progress_bar_base"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shc_dimen_7dp"
        android:background="@drawable/shc_base_progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/progress_bar_current"
        app:layout_constraintTop_toTopOf="@id/progress_bar_current" />

    <com.tokopedia.sellerhomecommon.presentation.view.customview.RoundGradientProgressBar
        android:id="@+id/progress_bar_current"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shc_dimen_10dp"
        android:layout_marginTop="@dimen/shc_dimen_10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_current_progress"
        app:rcBackgroundColor="@color/transparent"
        app:rcMax="100"
        app:rcRadius="@dimen/shc_dimen_20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>