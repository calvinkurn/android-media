<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icShcRecommendationItemType"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/bg_recommendation_positive" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcRecommendationItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/Unify_NN950_96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icShcRecommendationItemType"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="Tingkatkan kecepatan balas chat menjadi 2 menit " />
</androidx.constraintlayout.widget.ConstraintLayout>