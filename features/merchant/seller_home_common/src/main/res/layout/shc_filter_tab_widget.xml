<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:card_type="border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="12dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFilterTabTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:typographyType="display_3"
            tools:text="Evaluasi berdasarkan:"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvFilterTabDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/tvFilterTabTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvFilterTabTitle"
            app:layout_constraintStart_toEndOf="@id/tvFilterTabTitle"
            app:layout_constraintEnd_toStartOf="@id/ivFilterTabChevron"
            app:layout_constraintHorizontal_bias="0"
            app:typographyType="display_3"
            tools:text="Pesanan Baru"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/ivFilterTabChevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon_name="CHEVRON_DOWN"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify2>