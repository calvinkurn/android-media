<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sah_description_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/layout_lvl1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shc_medium_widget_height"
        android:padding="@dimen/layout_lvl2">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDescriptionTitle"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDescriptionDesc"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl2"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/shc_line_spacing_6"
            android:maxLength="170"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/fontSize_lvl2"
            app:layout_constraintBottom_toTopOf="@+id/tvDescriptionCta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescriptionTitle"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDescriptionCta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:paddingStart="@dimen/layout_lvl0"
            android:paddingLeft="@dimen/layout_lvl0"
            android:paddingEnd="@dimen/spacing_lvl2"
            android:paddingRight="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icDescriptionCtaArrow"
            app:layout_constraintStart_toStartOf="parent"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <ImageView
            android:id="@+id/icDescriptionCtaArrow"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tvDescriptionCta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDescriptionCta"
            app:srcCompat="@drawable/ic_arrow_right_default"
            android:contentDescription="@string/shc_content_desc_button_lihat_selengkapnya" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>