<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/layout_lvl1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTableWidgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl2"
            android:drawablePadding="@dimen/layout_lvl1"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="Total Pendapatan" />

        <com.tokopedia.sellerhomecommon.presentation.view.customview.tableview.TableView
            android:id="@+id/shcTableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTableWidgetTitle"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_height="@dimen/shc_large_widget_height" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcTableOnEmpty"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl6"
            android:layout_marginLeft="@dimen/layout_lvl6"
            android:layout_marginTop="@dimen/layout_lvl5"
            android:layout_marginEnd="@dimen/layout_lvl6"
            android:layout_marginRight="@dimen/layout_lvl6"
            android:layout_marginBottom="@dimen/layout_lvl5"
            android:gravity="center"
            android:text="@string/shc_table_widget_on_empty_message"
            android:textAlignment="center"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTableWidgetTitle"
            app:typographyType="body_3" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/btnTableCta"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl2"
            android:gravity="end"
            android:paddingStart="@dimen/layout_lvl0"
            android:paddingLeft="@dimen/layout_lvl0"
            android:paddingEnd="@dimen/spacing_lvl2"
            android:paddingRight="@dimen/spacing_lvl2"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/fontSize_lvl3"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icTableCta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shcTableView"
            app:typographyType="body_2"
            app:typographyWeight="reguler" />

        <ImageView
            android:id="@+id/icTableCta"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/btnTableCta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnTableCta"
            app:srcCompat="@drawable/ic_arrow_right_default"
            android:contentDescription="@string/shc_content_desc_button_lihat_selengkapnya" />

        <include
            layout="@layout/shc_partial_common_widget_state_error"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/shc_large_widget_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTableWidgetTitle"
            app:layout_constraintVertical_bias="0.0" />

        <include
            layout="@layout/shc_partial_widget_table_loading"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTableWidgetTitle" />

        <ImageView
            android:id="@+id/imgShcTableEmpty"
            android:layout_width="@dimen/shc_dimen_140dp"
            android:layout_height="@dimen/shc_dimen_110dp"
            android:layout_marginTop="@dimen/layout_lvl3"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/tvShcTableEmptyTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTableWidgetTitle"
            app:layout_constraintVertical_chainStyle="packed"
            tools:src="@drawable/unify_globalerrors_connection"
            tools:visibility="visible"
            android:contentDescription="@string/shc_content_desc_image_table_empty" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcTableEmptyTitle"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl3"
            android:gravity="center_horizontal"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/fontSize_lvl3"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/tvShcTableEmptyDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgShcTableEmpty"
            app:typographyWeight="bold"
            tools:text="@string/shc_empty_state_title_post_list"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcTableEmptyDescription"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl3"
            android:gravity="center_horizontal"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btnShcTableEmpty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvShcTableEmptyTitle"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="@string/shc_empty_state_description_post_list"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnShcTableEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/layout_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvShcTableEmptyDescription"
            app:unifyButtonSize="small"
            tools:text="@string/shc_empty_state_button_post_list"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>