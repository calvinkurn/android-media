<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/layout_lvl1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shc_large_widget_height">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPieChartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:drawablePadding="@dimen/layout_lvl1"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="Total Pendapatan" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPieChartValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/fontSize_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPieChartTitle"
            app:typographyWeight="bold"
            tools:text="Rp2.000.000" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPieChartSubValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:ellipsize="end"
            android:textSize="@dimen/fontSize_lvl2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvPieChartValue"
            app:layout_constraintTop_toBottomOf="@+id/tvPieChartValue"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Sub Title" />

        <com.tokopedia.charts.view.PieChartView
            android:id="@+id/pieChartShc"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPieChartSubValue" />

        <include
            layout="@layout/shc_partial_common_widget_state_error"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            layout="@layout/shc_partial_common_widget_state_loading"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPieChartTitle" />

        <!-- Empty State -->

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_shc_pie_chart_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iv_shc_pie_chart_empty, tv_shc_pie_chart_empty_title, tv_shc_pie_chart_empty_desc, btn_shc_pie_chart_empty"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iv_shc_pie_chart_empty"
            android:layout_width="@dimen/shc_dimen_140dp"
            android:layout_height="@dimen/shc_dimen_110dp"
            android:layout_marginTop="@dimen/layout_lvl3"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tv_shc_pie_chart_empty_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPieChartTitle"
            app:layout_constraintVertical_chainStyle="packed"
            tools:src="@drawable/unify_globalerrors_connection"
            tools:visibility="visible"
            android:contentDescription="@string/shc_content_desc_image_post_empty" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shc_pie_chart_empty_title"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl3"
            android:gravity="center_horizontal"
            tools:text="@string/shc_empty_state_title"
            android:textColor="@color/Unify_N700_96"
            android:textSize="@dimen/fontSize_lvl3"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/tv_shc_pie_chart_empty_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_shc_pie_chart_empty"
            app:typographyWeight="bold"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_shc_pie_chart_empty_desc"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl3"
            android:gravity="center_horizontal"
            tools:text="@string/shc_empty_state_description_post_list"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btnShcPostEmpty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_shc_pie_chart_empty_title"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_shc_pie_chart_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/layout_lvl3"
            tools:text="@string/shc_empty_state_button_post_list"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shc_pie_chart_empty_desc"
            app:unifyButtonSize="small"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>