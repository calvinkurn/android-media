<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/shc_dimen_12dp"
        android:paddingTop="@dimen/layout_lvl1"
        android:paddingEnd="@dimen/shc_dimen_12dp"
        android:paddingBottom="@dimen/layout_lvl1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcTooltipHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_lvl2"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Senin, 2 des"
            tools:visibility="visible" />

        <com.tokopedia.sellerhomecommon.presentation.view.customview.MultiLineGraphTooltipView
            android:id="@+id/ttvShcMlgTooltip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvShcTooltipHeader" />

        <com.tokopedia.sellerhomecommon.presentation.view.customview.MultiLineGraphTooltipView
            android:id="@+id/ttvShcMlgTooltip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ttvShcMlgTooltip1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>