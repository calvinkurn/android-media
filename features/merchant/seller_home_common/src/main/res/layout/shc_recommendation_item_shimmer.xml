<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmerItem1"
        android:layout_width="@dimen/layout_lvl5"
        android:layout_height="@dimen/layout_lvl5"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmerItem2"
        android:layout_width="@dimen/shc_dimen_156dp"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/unify_space_12"
        app:corners="10"
        app:layout_constraintStart_toEndOf="@+id/shimmerItem1"
        app:layout_constraintTop_toTopOf="@+id/shimmerItem1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmerItem3"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/unify_space_12"
        app:corners="10"
        app:layout_constraintBottom_toBottomOf="@+id/shimmerItem1"
        app:layout_constraintStart_toEndOf="@+id/shimmerItem1" />
</androidx.constraintlayout.widget.ConstraintLayout>