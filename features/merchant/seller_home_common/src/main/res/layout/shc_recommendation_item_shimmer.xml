<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerItem1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerItem2"
        android:layout_width="@dimen/shc_dimen_156dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/shimmerItem1"
        app:layout_constraintTop_toTopOf="@+id/shimmerItem1" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerItem3"
        android:layout_width="96dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toBottomOf="@+id/shimmerItem1"
        app:layout_constraintStart_toEndOf="@+id/shimmerItem1" />
</androidx.constraintlayout.widget.ConstraintLayout>