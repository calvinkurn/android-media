<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="4dp"
    android:paddingVertical="6dp"
    android:gravity="center_vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTableColumnHtmlMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN700_96"
        android:layout_marginStart="5dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvTableColumnHtmlMetaLabel"
        app:typographyType="paragraph_3"
        tools:text="Text Of Table" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTableColumnHtmlMetaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN0"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_shc_table_meta"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="small"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTableColumnHtmlMeta"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="SKU: 123456"/>

</androidx.constraintlayout.widget.ConstraintLayout>