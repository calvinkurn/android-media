<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/columnTextContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTableColumnText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shc_dimen_10dp"
        android:layout_marginBottom="@dimen/shc_dimen_10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="2"
        android:textAlignment="textEnd"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_3"
        tools:text="Text Of Table" />
</LinearLayout>