<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmering_multi_1"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toStartOf="@+id/shimmering_multi_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmering_multi_2"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shimmering_multi_1"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <View
        android:id="@+id/line_multi_component"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_multi_1"
        android:background="@color/Unify_NN600_68" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline_multi_component"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_multi_1"
        app:layout_constraintBottom_toBottomOf="@+id/line_multi_component"
        android:background="@color/Unify_GN500" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_multi_component"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>