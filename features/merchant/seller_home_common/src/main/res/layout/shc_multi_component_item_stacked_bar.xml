<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcStackedBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950_96"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Detail potensi penjualan"/>

    <com.tokopedia.charts.view.BarChartView
        android:id="@+id/barChartShcStackedBar"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvShcStackedBarTitle"
        app:layout_constraintBottom_toBottomOf="@id/rvShcStackedBar"/>


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcStackedBarDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/Unify_NN950"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_shc_stacked_bar_desc"
        app:cardBackgroundColor="@color/Unify_NN50"
        app:layout_constraintTop_toTopOf="@id/barChartShcStackedBar"
        app:layout_constraintStart_toEndOf="@id/barChartShcStackedBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_3"
        tools:text="PLUS bantu tingkatkan 5% potensi penjualan"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShcStackedBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/tvShcStackedBarDesc"
        app:layout_constraintStart_toStartOf="@id/tvShcStackedBarDesc"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="2"
        tools:listitem="@layout/shc_item_stacked_bar_legend"/>

</androidx.constraintlayout.widget.ConstraintLayout>