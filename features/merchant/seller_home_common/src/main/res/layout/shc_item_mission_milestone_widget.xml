<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="180dp"
    app:card_type="border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgShcMission"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcTitleItemMission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toStartOf="@+id/tvShcMissionPosition"
            app:layout_constraintStart_toEndOf="@id/imgShcMission"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_6"
            tools:text="Atur Pengiriman" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcDescItemMission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgShcMission"
            app:typographyType="body_3"
            tools:text="Maksimalkan pengalaman belanja di tokomu dengan tambah 4 produk lagi, ya!" />

        <com.tokopedia.unifycomponents.ProgressBarUnify
            android:id="@+id/progressBarShcMilestoneCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/tvShcDescItemMission"
            app:layout_constraintStart_toStartOf="@+id/tvShcDescItemMission"
            app:layout_constraintTop_toBottomOf="@+id/tvShcDescItemMission"
            tools:layout_height="@dimen/layout_lvl2"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcMilestoneCardDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/progressBarShcMilestoneCard"
            app:layout_constraintStart_toStartOf="@+id/progressBarShcMilestoneCard"
            app:layout_constraintTop_toBottomOf="@+id/progressBarShcMilestoneCard"
            app:typographyType="small"
            android:textColor="@color/Unify_NN600"
            tools:text="Produk diiklankan"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnShcMissionCta"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvShcDescItemMission"
            app:layout_constraintStart_toStartOf="@+id/tvShcDescItemMission"
            app:layout_constraintTop_toBottomOf="@id/tvShcMilestoneCardDescription"
            app:layout_constraintVertical_bias="1"
            app:unifyButtonSize="small"
            app:unifyButtonType="main"
            app:unifyButtonVariant="ghost"
            tools:text="Tambah Produk" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcMissionPosition"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="-1dp"
            android:background="@drawable/bg_corner_pin_number_milestone_widget"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_5"
            tools:text="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>