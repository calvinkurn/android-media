<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bannerImagesShimmering"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingLeft="8dp"
    android:paddingEnd="8dp"
    android:paddingRight="8dp">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmering_title"
        android:layout_width="156dp"
        android:layout_height="16dp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmering_banner"
        android:layout_width="0dp"
        android:layout_height="@dimen/shc_dimen_180dp"
        android:layout_marginTop="16dp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_title" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmering_load_more"
        android:layout_width="64dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_banner" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmering_dots"
        android:layout_width="64dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_banner" />

</androidx.constraintlayout.widget.ConstraintLayout>