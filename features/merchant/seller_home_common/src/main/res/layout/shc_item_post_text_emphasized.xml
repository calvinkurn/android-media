<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/shc_dimen_6dp"
    tools:background="@drawable/shc_bg_ripple_radius_4dp">

    <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
        android:id="@+id/cbShcItemPostTextEmphasize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/parentViewShcItemPostTextEmphasized"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/parentViewShcItemPostTextEmphasized"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentViewShcItemPostTextEmphasized"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="@dimen/shc_dimen_6dp"
        android:paddingEnd="8dp"
        android:paddingBottom="@dimen/shc_dimen_6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cbShcItemPostTextEmphasize"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgShcPostState"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvShcPostState"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvShcPostState"
            app:unify_image_corner_radius="0"
            app:unify_image_placeholder="@android:color/transparent"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcPostState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgShcPostState"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            tools:text="Yah, pengunjung tokomu terus menurun" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcPostTextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintEnd_toStartOf="@+id/imgShcPostMedia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvShcPostState"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Tonton sharing session ‘Tips Memulai Berjualan’ bersama Top Seller" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcPostTextDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textColor="@color/Unify_NN950_68"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvShcPostTextTitle"
            app:layout_constraintTop_toBottomOf="@id/tvShcPostTextTitle"
            app:layout_constraintVertical_bias="0.0"
            app:typographyType="small"
            tools:text="Rekomendasi Artikel" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgShcPostMedia"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/shc_content_desc_image_post"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvShcPostTextTitle"
            app:layout_constraintVertical_bias="0.0"
            app:unify_image_placeholder="@android:color/transparent"
            tools:src="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/lineShcItemPost"
        android:layout_width="0dp"
        android:layout_height="@dimen/shc_dimen_1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/shc_dimen_6dp"
        android:layout_marginEnd="8dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parentViewShcItemPostTextEmphasized" />

</androidx.constraintlayout.widget.ConstraintLayout>