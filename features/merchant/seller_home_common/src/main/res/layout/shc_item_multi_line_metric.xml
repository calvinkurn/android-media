<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:card_background_color="@color/Unify_Background">

    <LinearLayout
        android:id="@+id/containerShcCardMetric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcMetricsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/shc_dimen_12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/shc_dimen_12dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="@dimen/shc_dimen_18dp"
            android:textColor="@color/Unify_NN900"
            app:typographyType="display_3"
            tools:text="Pesanan" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcMetricsValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/shc_dimen_12dp"
            android:layout_marginEnd="@dimen/shc_dimen_12dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="@dimen/shc_dimen_22dp"
            android:text="@string/shc_load_failed"
            android:textColor="@color/Unify_NN900"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            tools:text="Rp999.999.999" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcMetricsSubValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/shc_dimen_12dp"
            android:layout_marginEnd="@dimen/shc_dimen_12dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="@dimen/shc_dimen_18dp"
            android:textColor="@color/Unify_NN600"
            app:typographyType="display_3"
            tools:text="Potensi +Rp10 jt" />

        <View
            android:id="@+id/viewShcMetricsColor"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="4dp"
            tools:background="@color/Unify_GN500" />
    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>