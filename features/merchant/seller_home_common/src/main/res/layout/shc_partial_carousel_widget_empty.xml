<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupShcCarouselEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="imgShcCarouselEmpty, tvShcCarouselEmptyTitle, tvShcCarouselEmptyDesc, btnShcCarouselEmpty" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgShcCarouselEmpty"
        android:layout_width="@dimen/shc_dimen_140dp"
        android:layout_height="@dimen/shc_dimen_110dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/shc_content_desc_image_carousel_empty"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tvShcCarouselEmptyTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/unify_globalerrors_connection"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcCarouselEmptyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal"
        android:textColor="@color/Unify_N700_96"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvShcCarouselEmptyDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgShcCarouselEmpty"
        app:typographyWeight="bold"
        tools:text="@string/shc_empty_state_title"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcCarouselEmptyDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal"
        android:textColor="@color/Unify_N700_68"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btnShcCarouselEmpty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShcCarouselEmptyTitle"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="@string/shc_empty_state_description_post_list"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnShcCarouselEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvShcCarouselEmptyDesc"
        app:unifyButtonSize="small"
        tools:text="@string/shc_empty_state_button_post_list"
        tools:visibility="visible" />
</merge>