<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/shcUnificationShimmerDivider"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerItem1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shcUnificationShimmerDivider"
        app:loader_corner_radius="5dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerItem2"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toStartOf="@+id/shimmerItem4"
        app:layout_constraintStart_toEndOf="@+id/shimmerItem1"
        app:layout_constraintTop_toTopOf="@+id/shimmerItem1"
        app:loader_corner_radius="5dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerItem3"
        android:layout_width="96dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/shimmerItem1"
        app:layout_constraintStart_toEndOf="@+id/shimmerItem1"
        app:loader_corner_radius="5dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerItem4"
        android:layout_width="54dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/shimmerItem1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="5dp"
        app:loader_type="rect" />
</androidx.constraintlayout.widget.ConstraintLayout>