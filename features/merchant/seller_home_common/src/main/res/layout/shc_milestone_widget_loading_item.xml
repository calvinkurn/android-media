<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:card_type="border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerShcRecommendationError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/imgMilestoneLoading"
            android:layout_width="@dimen/shc_dimen_40dp"
            android:layout_height="@dimen/shc_dimen_40dp"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:corners="16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tvShcMilestoneLoadingItem1"
            android:layout_width="@dimen/shc_dimen_144dp"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginStart="@dimen/spacing_lvl3"
            app:corners="8"
            app:layout_constraintStart_toEndOf="@id/imgMilestoneLoading"
            app:layout_constraintTop_toTopOf="@id/imgMilestoneLoading" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tvShcMilestoneLoadingItem2"
            android:layout_width="@dimen/shc_dimen_190dp"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:corners="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvShcMilestoneLoadingItem1"
            app:layout_constraintTop_toBottomOf="@id/tvShcMilestoneLoadingItem1" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tvShcMilestoneLoadingItem3"
            android:layout_width="@dimen/shc_dimen_80dp"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:corners="8"
            app:layout_constraintStart_toStartOf="@id/tvShcMilestoneLoadingItem2"
            app:layout_constraintTop_toBottomOf="@id/tvShcMilestoneLoadingItem2" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/tvShcMilestoneLoadingItem4"
            android:layout_width="@dimen/shc_dimen_80dp"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/layout_lvl2"
            app:corners="8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvShcMilestoneLoadingItem3"
            app:layout_constraintTop_toBottomOf="@id/tvShcMilestoneLoadingItem3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>
