<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerTableWidgetWidget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingTop="@dimen/layout_lvl2"
    android:paddingEnd="@dimen/layout_lvl2"
    android:paddingBottom="@dimen/layout_lvl1">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/sahTableShimmer0"
        android:layout_width="@dimen/shc_dimen_120dp"
        android:layout_height="@dimen/layout_lvl2"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/sahTableShimmer1"
        android:layout_width="@dimen/shc_dimen_100dp"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:corners="8"
        app:layout_constraintStart_toStartOf="@+id/sahTableShimmer0"
        app:layout_constraintTop_toBottomOf="@id/sahTableShimmer0" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/sahTableShimmer2"
        android:layout_width="@dimen/shc_dimen_100dp"
        android:layout_height="@dimen/layout_lvl1"
        app:corners="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sahTableShimmer1" />

    <include
        android:id="@+id/shcTableItemShimmer0"
        layout="@layout/shc_partial_widget_table_loading_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sahTableShimmer1" />

    <include
        android:id="@+id/shcTableItemShimmer1"
        layout="@layout/shc_partial_widget_table_loading_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shcTableItemShimmer0" />

    <include
        android:id="@+id/shcTableItemShimmer2"
        layout="@layout/shc_partial_widget_table_loading_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shcTableItemShimmer1" />

    <include
        android:id="@+id/shcTableItemShimmer3"
        layout="@layout/shc_partial_widget_table_loading_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shcTableItemShimmer2" />

    <include
        android:id="@+id/shcTableItemShimmer4"
        layout="@layout/shc_partial_widget_table_loading_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shcTableItemShimmer3" />
</androidx.constraintlayout.widget.ConstraintLayout>