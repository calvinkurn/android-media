<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerTableWidgetWidget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="16dp">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shcTableLoader0"
        android:layout_width="@dimen/shc_dimen_88dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shcTableLoader1"
        android:layout_width="@dimen/shc_dimen_88dp"
        android:layout_height="8dp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shcTableLoader0" />

    <View
        android:id="@+id/shcTableLoaderHorLine0"
        android:layout_width="0dp"
        android:layout_height="@dimen/shc_dimen_1dp"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shcTableLoader0" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shcTableLoader"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/shc_dimen_140dp"
        android:layout_marginBottom="@dimen/shc_dimen_140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shcTableLoaderHorLine0" />
</androidx.constraintlayout.widget.ConstraintLayout>