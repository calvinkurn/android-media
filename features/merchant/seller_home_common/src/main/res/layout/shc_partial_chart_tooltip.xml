<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:card_background_color="@color/Unify_Background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcTooltipTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/Unify_NN600"
            app:typographyType="small"
            tools:text="2 Jan" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcTooltipValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/Unify_NN900"
            android:textSize="12sp"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="15.000.000.000 rb" />
    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>
