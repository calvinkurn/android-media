<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sahPostListOnLoadingLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/shc_large_widget_height"
    android:padding="16dp">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmering_card_title"
        android:layout_width="@dimen/shc_dimen_156dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmering_first_info_seller_item"
        layout="@layout/shc_partial_shimmering_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shc_dimen_26dp"
        app:layout_constraintTop_toBottomOf="@id/shimmering_card_title" />

    <include
        android:id="@+id/shimmering_second_info_seller_item"
        layout="@layout/shc_partial_shimmering_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/shimmering_first_info_seller_item" />

    <include
        android:id="@+id/shimmering_third_info_seller_item"
        layout="@layout/shc_partial_shimmering_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/shimmering_second_info_seller_item" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:layout_width="@dimen/shc_dimen_156dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/shc_dimen_28dp"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_third_info_seller_item" />

</androidx.constraintlayout.widget.ConstraintLayout>