<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiLineEmptyState"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:card_background_color="@color/Unify_Background"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvLineGraphEmptyStateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            tools:text="@string/shc_data_empty_state_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvLineGraphEmptyStateDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/Unify_NN600"
            app:typographyType="display_3"
            tools:text="@string/shc_empty_state_description" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcMultiLineEmptyStateCta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_GN500"
            app:typographyType="display_3"
            tools:text="@string/shc_empty_state_cta" />
    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify>
