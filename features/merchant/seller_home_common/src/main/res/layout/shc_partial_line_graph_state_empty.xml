<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiLineEmptyState"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingEnd="12dp"
        android:paddingBottom="@dimen/spacing_lvl3">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvLineGraphEmptyStateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="@string/shc_data_empty_state_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvLineGraphEmptyStateDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="@string/shc_empty_state_description" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShcMultiLineEmptyStateCta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:textColor="@color/Unify_G500"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="@string/shc_empty_state_cta" />
    </LinearLayout>

</com.tokopedia.unifycomponents.CardUnify>
