<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcDateLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_44"
        android:textSize="@dimen/fontSize_lvl2"
        app:typographyType="body_3"
        tools:text="Mulai dari" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShcDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:text="@string/shc_select_date"
        android:textColor="@color/Unify_N700_44"
        app:typographyType="body_1" />

    <View
        android:id="@+id/horLineDtf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shc_dimen_1dp"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:background="@color/Unify_N150" />
</LinearLayout>