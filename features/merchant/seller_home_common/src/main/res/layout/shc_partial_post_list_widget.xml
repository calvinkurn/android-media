<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sahPostListOnSuccessLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/shc_large_widget_height"
    android:padding="@dimen/layout_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPostListTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Info Seller" />

    <ImageView
        android:id="@+id/imgInfo"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:background="@android:color/transparent"
        android:padding="@dimen/shc_dimen_7dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPostListTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvPostListTitle"
        app:layout_constraintTop_toTopOf="@+id/tvPostListTitle"
        app:srcCompat="@drawable/ic_info"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPostList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl1"
        android:focusable="false"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPostListTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="3"
        tools:listitem="@layout/shc_item_post"
        tools:targetApi="lollipop" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPostListSeeDetails"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:maxLines="1"
        android:paddingStart="@dimen/layout_lvl0"
        android:paddingLeft="@dimen/layout_lvl0"
        android:paddingEnd="@dimen/spacing_lvl2"
        android:paddingRight="@dimen/spacing_lvl2"
        android:text="@string/shc_more"
        android:textColor="@color/Green_G500"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/icPostListSeeDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvPostList"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

    <ImageView
        android:id="@+id/icPostListSeeDetails"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:layout_constraintBottom_toBottomOf="@+id/tvPostListSeeDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPostListSeeDetails"
        app:srcCompat="@drawable/ic_arrow_right_default" />

</androidx.constraintlayout.widget.ConstraintLayout>