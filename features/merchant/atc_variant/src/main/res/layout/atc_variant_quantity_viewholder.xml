<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_static_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_6"
        app:typographyWeight="bold"
        android:text="@string/atc_variant_quantity_label"
        tools:text="Jumlah barang:" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_desc_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_static_quantity"
        app:typographyType="body_3"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Maks. pembelian 1 buah" />

    <com.tokopedia.unifycomponents.QuantityEditorUnify
        android:id="@+id/qty_variant_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>