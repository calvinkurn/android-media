<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_variant_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:textColor="@color/Unify_N700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Pilih Warna : " />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_variant_selected_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:textColor="@color/Unify_N700_44"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_variant_category_name"
        app:layout_constraintBottom_toBottomOf="@+id/txt_variant_category_name"
        app:layout_constraintStart_toEndOf="@+id/txt_variant_category_name"
        app:layout_constraintTop_toTopOf="@+id/txt_variant_category_name"
        app:layout_constraintVertical_bias="0.9"
        app:typographyType="body_2"
        tools:text="10 Pilihan" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_variant_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/atc_variant_guideline"
        android:textColor="@color/Unify_G500"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/txt_variant_category_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_variant_category_name"
        app:typographyType="body_2"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_atc_variant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_variant_category_name"
        tools:ignore="RtlSymmetry"
        tools:itemCount="1" />

</androidx.constraintlayout.widget.ConstraintLayout>