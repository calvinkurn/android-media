<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_variant_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/Unify_NN900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Pilih Warna : " />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_variant_selected_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_variant_category_name"
        app:layout_constraintBottom_toBottomOf="@+id/txt_variant_category_name"
        app:layout_constraintStart_toEndOf="@+id/txt_variant_category_name"
        app:layout_constraintTop_toTopOf="@+id/txt_variant_category_name"
        app:layout_constraintVertical_bias="0.9"
        app:typographyType="body_2"
        tools:text="10 Pilihan" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_variant_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/atc_variant_guideline"
        android:textColor="@color/Unify_GN500"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/txt_variant_category_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_variant_category_name"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:visibility="visible" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_atc_variant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        app:chipSpacingHorizontal="0dp"
        app:chipSpacingVertical="2dp"
        app:singleLine="false"
        app:singleSelection="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_variant_category_name"  />

</androidx.constraintlayout.widget.ConstraintLayout>