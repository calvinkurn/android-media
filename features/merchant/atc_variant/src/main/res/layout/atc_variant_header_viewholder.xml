<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_header_main"
        android:layout_width="105dp"
        android:layout_height="105dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_header_main_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/img_header_main"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rp150.000"/>

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/lbl_header_discounted_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:labelType="general_light_red"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/txt_header_main_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_header_main_price"
        tools:text="50%"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_header_slash_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:textColor="@color/Unify_N700_68"
        android:layout_marginStart="4dp"
        app:layout_goneMarginStart="0dp"
        app:layout_goneMarginTop="6dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/lbl_header_discounted_percentage"
        app:layout_constraintTop_toTopOf="@+id/lbl_header_discounted_percentage"
        tools:text="Rp300.000"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_header_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="small"
        android:textColor="@color/Unify_N700_68"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_header_slash_price"
        app:layout_constraintStart_toEndOf="@+id/img_header_main"
        app:layout_constraintStart_toStartOf="@+id/txt_header_main_price"
        tools:text="Stock > 50"/>

</androidx.constraintlayout.widget.ConstraintLayout>