<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="9dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/img_header_main"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/img_header_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_header_main"
        app:layout_constraintTop_toTopOf="@id/img_header_main">

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_variant_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:labelType="general_light_grey"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toStartOf="@+id/lbl_variant_name_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Kuning " />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_variant_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constrainedWidth="true"
            app:labelType="general_light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lbl_variant_name_1"
            app:layout_constraintTop_toTopOf="@+id/lbl_variant_name_1"
            tools:text="Kuning asdas dasa d dsa asda sdasdasd asdas das sad asdsa" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_header_main_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_variant_name_1"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp150.000" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_header_discounted_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintStart_toStartOf="@+id/txt_header_main_price"
            app:layout_constraintTop_toBottomOf="@+id/txt_header_main_price"
            tools:text="50%"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_header_slash_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/lbl_header_discounted_percentage"
            app:layout_constraintTop_toTopOf="@+id/lbl_header_discounted_percentage"
            app:layout_goneMarginStart="0dp"
            app:layout_goneMarginTop="6dp"
            app:typographyType="body_3"
            tools:text="Rp300.000"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_header_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintStart_toStartOf="@+id/txt_header_main_price"
            app:layout_constraintTop_toBottomOf="@+id/txt_header_slash_price"
            app:typographyType="small"
            tools:text="Stock > 50" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_var_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/txt_header_main_price"
            app:layout_constraintTop_toBottomOf="@+id/txt_header_stock"
            app:typographyType="small"
            tools:text="Dikirim dari Tokocabang"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/Unify_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_header_main" />

</androidx.constraintlayout.widget.ConstraintLayout>