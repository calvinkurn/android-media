<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="9dp">

    <FrameLayout
        android:id="@+id/container_img_header_main"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/img_header_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ic_enlarge_img_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="end|bottom"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/ic_enlarge_icon" />

    </FrameLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/container_img_header_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/container_img_header_main"
        app:layout_constraintTop_toTopOf="@id/container_img_header_main">

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_variant_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxWidth="120dp"
            android:maxLines="1"
            app:labelType="general_light_grey"
            app:layout_constraintEnd_toStartOf="@+id/lbl_variant_name_2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Kuning " />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_variant_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:maxWidth="120dp"
            android:maxLines="1"
            app:labelType="general_light_grey"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lbl_variant_name_1"
            app:layout_constraintTop_toTopOf="@+id/lbl_variant_name_1"
            tools:text="Kuning asdas dasa d dsa asda sdasdasd asdas das sad asdsa" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_header_main_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_variant_name_1"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Rp150.000" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_header_cashback_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:labelType="general_light_green"
            app:layout_constraintStart_toStartOf="@+id/txt_header_main_price"
            app:layout_constraintTop_toBottomOf="@+id/txt_header_main_price"
            tools:text="Cashback 5%"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/lbl_header_discounted_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintStart_toEndOf="@+id/lbl_header_cashback_percentage"
            app:layout_constraintTop_toBottomOf="@+id/txt_header_main_price"
            app:layout_goneMarginStart="0dp"
            tools:text="50%"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_header_slash_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/lbl_header_discounted_percentage"
            app:layout_constraintTop_toTopOf="@+id/lbl_header_discounted_percentage"
            app:layout_goneMarginStart="0dp"
            app:layout_goneMarginTop="6dp"
            app:typographyType="body_3"
            tools:text="Rp300.000"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_cashback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="txt_header_slash_price, lbl_header_discounted_percentage,
            lbl_header_cashback_percentage" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_header_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintStart_toStartOf="@+id/txt_header_main_price"
            app:layout_constraintTop_toBottomOf="@+id/barrier_cashback"
            app:typographyType="small"
            tools:text="Stock > 50" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/txt_var_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/Unify_N700_68"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/txt_header_main_price"
            app:layout_constraintTop_toBottomOf="@+id/txt_header_stock"
            app:typographyType="small"
            tools:text="Dikirim dari Tokocabang"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/Unify_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_img_header_main" />

</androidx.constraintlayout.widget.ConstraintLayout>