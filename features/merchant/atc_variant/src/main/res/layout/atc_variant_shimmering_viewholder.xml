<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_product"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_96"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/text_product_name"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toTopOf="@id/text_product_description"
        app:layout_constraintLeft_toRightOf="@id/image_product"
        app:layout_constraintTop_toTopOf="@id/image_product"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/text_product_description"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@id/image_product"
        app:layout_constraintLeft_toLeftOf="@id/text_product_name"
        app:layout_constraintTop_toBottomOf="@id/text_product_name" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/divider_header_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/image_product" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/text_info_variant"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toLeftOf="@id/image_product"
        app:layout_constraintTop_toBottomOf="@id/divider_header_body" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_1"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_variant_2"
        app:layout_constraintTop_toBottomOf="@id/text_info_variant" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_2"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toRightOf="@id/image_variant_1"
        app:layout_constraintRight_toLeftOf="@id/image_variant_3"
        app:layout_constraintTop_toTopOf="@id/image_variant_1" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_3"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toRightOf="@id/image_variant_2"
        app:layout_constraintRight_toLeftOf="@id/image_variant_4"
        app:layout_constraintTop_toTopOf="@id/image_variant_1" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_4"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toRightOf="@id/image_variant_3"
        app:layout_constraintRight_toLeftOf="@id/image_variant_5"
        app:layout_constraintTop_toTopOf="@id/image_variant_1" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_5"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_20"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toRightOf="@id/image_variant_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_variant_1" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_6"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_variant_7"
        app:layout_constraintTop_toBottomOf="@id/image_variant_1" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_7"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toRightOf="@id/image_variant_6"
        app:layout_constraintRight_toLeftOf="@id/image_variant_8"
        app:layout_constraintTop_toTopOf="@id/image_variant_6" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_8"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toRightOf="@id/image_variant_7"
        app:layout_constraintRight_toLeftOf="@id/image_variant_9"
        app:layout_constraintTop_toTopOf="@id/image_variant_6" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_9"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_10"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toRightOf="@id/image_variant_8"
        app:layout_constraintRight_toLeftOf="@id/image_variant_10"
        app:layout_constraintTop_toTopOf="@id/image_variant_6" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/image_variant_10"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_20"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toRightOf="@id/image_variant_9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_variant_6" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/text_info_chip"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_24"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toLeftOf="@id/image_product"
        app:layout_constraintTop_toBottomOf="@id/image_variant_6" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/chip_variant_1"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        app:corners="40"
        app:layout_constraintLeft_toLeftOf="@id/image_product"
        app:layout_constraintTop_toBottomOf="@id/text_info_chip" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/chip_variant_2"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_4"
        app:corners="40"
        app:layout_constraintLeft_toRightOf="@id/chip_variant_1"
        app:layout_constraintTop_toTopOf="@id/chip_variant_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/chip_variant_3"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_4"
        app:corners="40"
        app:layout_constraintLeft_toRightOf="@id/chip_variant_2"
        app:layout_constraintTop_toTopOf="@id/chip_variant_1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/chip_variant_4"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_4"
        app:corners="40"
        app:layout_constraintLeft_toRightOf="@id/chip_variant_3"
        app:layout_constraintTop_toTopOf="@id/chip_variant_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_26"
        android:background="@drawable/bg_shadow_top"
        android:paddingLeft="@dimen/dp_9"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/chip_variant_1">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_weight="1"
            app:corners="@integer/corner_radius_shimmering" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_weight="1"
            app:corners="@integer/corner_radius_shimmering" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>