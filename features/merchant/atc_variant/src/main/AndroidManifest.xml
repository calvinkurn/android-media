<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tkpd.atc_variant">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".views.AtcVariantActivity"
            android:label="@string/title_activity_atc_variant"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.Translucent">

            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_atc_variant"
                    android:scheme="@string/internal_scheme" />

            </intent-filter>
        </activity>
    </application>

</manifest>