<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_lvl1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemSellerFeatureContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/ivSellerFeature"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_plus_add" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvSellerFeatureTitle"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:lineSpacingExtra="@dimen/spacing_lvl1"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintBottom_toBottomOf="@id/ivSellerFeature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSellerFeature"
            app:layout_constraintTop_toTopOf="@id/ivSellerFeature"
            app:typographyType="small"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvSellerFeatureDescription"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivSellerFeature"
            app:typographyType="body_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>