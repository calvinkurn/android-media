<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Unify_N0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sellerMigrationBottomSheetTitle"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingStart="@dimen/layout_lvl2"
            android:paddingEnd="@dimen/layout_lvl2"
            app:typographyType="heading_2"
            app:typographyWeight="bold"
            tools:text="@string/seller_migration_broadcast_chat_bottom_sheet_title"/>

        <include layout="@layout/partial_seller_migration_warning"
            android:id="@+id/sellerMigrationWarningCard"
            android:layout_below="@id/sellerMigrationBottomSheetTitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"/>

        <include
            layout="@layout/partial_seller_migration_date"
            android:id="@+id/layout_seller_migration_date"
            android:layout_below="@id/sellerMigrationWarningCard"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:visibility="gone"
            tools:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/image_or_carousel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_seller_migration_date"
            android:layout_marginTop="@dimen/layout_lvl3">

            <com.tokopedia.carousel.CarouselUnify
                android:id="@+id/sellerMigrationCarousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/sellerMigrationBottomSheetImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/layout_lvl2"
                android:paddingEnd="@dimen/layout_lvl2"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:visibility="visible"
                tools:src="@tools:sample/avatars"/>
        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/sellerMigrationBottomSheetContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_or_carousel_layout"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:paddingStart="@dimen/layout_lvl2"
            android:paddingEnd="@dimen/layout_lvl2"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            tools:text="@string/seller_migration_broadcast_chat_bottom_sheet_desc"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_seller_migration_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sellerMigrationBottomSheetContent"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:visibility="gone"
            tools:visibility="visible"
            tools:listitem="@layout/item_seller_migration_benefit_point"
            tools:itemCount="3"/>

        <include layout="@layout/partial_seller_migration_footer"
            android:layout_marginTop="@dimen/layout_lvl4"
            android:layout_below="@id/rv_seller_migration_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_lvl3"/>

    </RelativeLayout>

</ScrollView>