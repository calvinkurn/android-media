<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingEnd="@dimen/layout_lvl2"
    android:paddingTop="@dimen/layout_lvl2"
    android:paddingBottom="@dimen/layout_lvl2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_item_seller_migration_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/ic_seller_migration_focus_selling"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_item_seller_migration_account_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl3"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_5"
        app:layout_constraintStart_toEndOf="@id/iv_item_seller_migration_account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_item_seller_migration_account_desc"
        tools:text="@string/seller_migration_account_bottom_sheet_item_title_focus"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_item_seller_migration_account_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="@id/tv_item_seller_migration_account_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_seller_migration_account_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/seller_migration_account_bottom_sheet_item_desc_focus"/>

</androidx.constraintlayout.widget.ConstraintLayout>