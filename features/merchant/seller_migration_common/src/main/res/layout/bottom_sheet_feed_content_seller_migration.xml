<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    android:layout_marginBottom="@dimen/spacing_lvl4">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPostFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seller_migration_bottom_sheet_feed_post_your_favorite_item"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerPost"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPostFavorite" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupPostShopSeller"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerPost"
        app:constraint_referenced_ids="tvShopPost, tvInSeller"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvShopPost"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:text="@string/seller_migration_bottom_sheet_feed_post_shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerPost" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/tvInSeller"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:text="@string/seller_migration_bottom_sheet_feed_in_tokopedia_seller"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:paddingTop="@dimen/spacing_lvl3"
        app:labelType="general_light_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvShopPost"
        app:layout_constraintTop_toBottomOf="@id/dividerPost" />

</androidx.constraintlayout.widget.ConstraintLayout>