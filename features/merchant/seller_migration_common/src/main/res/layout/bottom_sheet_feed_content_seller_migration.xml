<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:paddingBottom="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPostFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/seller_migration_bottom_sheet_feed_post_your_favorite_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerPost"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPostFavorite" />

    <LinearLayout
        android:id="@+id/groupPostShopSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?selectableItemBackground"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerPost">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvShopPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seller_migration_bottom_sheet_feed_post_shop" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/tvInSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/seller_migration_bottom_sheet_feed_in_tokopedia_seller"
            app:labelType="general_light_green" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>