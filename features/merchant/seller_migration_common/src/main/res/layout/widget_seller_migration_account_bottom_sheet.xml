<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seller_migration_account_button_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/seller_migration_account_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/seller_migration_account_home_bottom_sheet_title"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl2"
                app:typographyWeight="bold"
                app:typographyType="heading_2"
                app:layout_constraintTop_toTopOf="parent"/>

            <include layout="@layout/partial_seller_migration_warning"
                android:id="@+id/sellerMigrationAccountWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/seller_migration_account_title" />

            <ImageView
                android:id="@+id/sellerMigrationAccountBottomSheetImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl3"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl2"
                app:layout_constraintTop_toBottomOf="@id/sellerMigrationAccountWarning" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/sellerMigrationBottomSheetContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/layout_lvl2"
                app:typographyWeight="reguler"
                app:typographyType="body_2"
                app:layout_constraintTop_toBottomOf="@id/sellerMigrationAccountBottomSheetImage"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/seller_migration_account_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/seller_migration_account_home_bottom_sheet_subtitle"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/layout_lvl3"
                app:typographyWeight="bold"
                app:typographyType="heading_4"
                app:layout_constraintTop_toBottomOf="@id/sellerMigrationBottomSheetContent"/>

            <include layout="@layout/partial_seller_migration_multi_icon_information"
                android:id="@+id/seller_migration_multi_icon_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seller_migration_account_subtitle" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/sellerMigrationAccountBottomSheetLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginLeft="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/layout_lvl5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seller_migration_multi_icon_information"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/seller_migration_account_button_layout"/>

    <LinearLayout
        android:id="@+id/seller_migration_account_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/layout_lvl1"
        android:paddingTop="@dimen/layout_lvl1">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/sellerMigrationAccountBottomSheetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seller_migration_bottom_sheet_button"
            app:unifyButtonSize="medium"/>

    </LinearLayout>

</RelativeLayout>