<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/seller_migration_product_bottom_sheet_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl3"
        android:text="@string/seller_migration_product_bottom_sheet_title"
        android:maxLines="2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        app:typographyType="heading_2"
        app:typographyWeight="bold"/>

    <include layout="@layout/partial_seller_migration_warning_card"
        android:id="@+id/seller_migration_product_warning_card"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/seller_migration_product_bottom_sheet_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/sellerMigrationBottomSheetProductImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_below="@id/seller_migration_product_warning_card"
        android:layout_marginTop="@dimen/layout_lvl2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/seller_migration_product_bottom_sheet_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerMigrationBottomSheetProductImage"
        android:text="@string/seller_migration_product_bottom_sheet_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:typographyType="body_2"
        app:typographyWeight="reguler"/>

    <include layout="@layout/partial_seller_migration_footer"
        android:layout_below="@id/seller_migration_product_bottom_sheet_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>