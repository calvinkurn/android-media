<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/layout_lvl1"
    android:paddingEnd="@dimen/layout_lvl1"
    android:paddingBottom="@dimen/dp_20"
    android:background="@drawable/bg_seller_migration_green">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/card_seller_migration_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_seller_migration_rounded"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_20">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_sellerapp_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/layout_lvl2"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_seller_migration_sellerapp"/>

            <View
                android:id="@+id/view_seller_migration_icon_border"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_seller_migration_rounded_border"
                app:layout_constraintStart_toStartOf="@id/img_sellerapp_icon"
                app:layout_constraintEnd_toEndOf="@id/img_sellerapp_icon"
                app:layout_constraintTop_toTopOf="@id/img_sellerapp_icon"
                app:layout_constraintBottom_toBottomOf="@id/img_sellerapp_icon"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_seller_migration_account_header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl2"
                android:textColor="@color/Neutral_N700_96"
                android:text="@string/seller_migration_account_bottom_sheet_header_info"
                android:maxLines="2"
                app:typographyType="body_2"
                app:layout_constraintStart_toEndOf="@id/img_sellerapp_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_sellerapp_icon"
                app:layout_constraintBottom_toTopOf="@id/tv_seller_migration_account_header_appname"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_seller_migration_account_header_appname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl2"
                android:text="@string/seller_migration_account_bottom_sheet_header_app_name"
                android:maxLines="1"
                app:typographyType="heading_3"
                app:layout_constraintStart_toEndOf="@id/img_sellerapp_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_seller_migration_account_header_title"
                app:layout_constraintBottom_toBottomOf="@id/img_sellerapp_icon"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_seller_migration_account_warning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/layout_lvl3"
                app:layout_constraintWidth_percent="0.037"
                app:layout_constraintTop_toBottomOf="@id/img_sellerapp_icon"
                app:layout_constraintStart_toStartOf="@id/img_sellerapp_icon"
                app:srcCompat="@drawable/ic_seller_migration_warning"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_seller_migration_account_header_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="@string/seller_migration_account_bottom_sheet_header_start"
                android:textColor="@color/Neutral_N700_68"
                app:typographyType="body_2"
                app:layout_constraintStart_toEndOf="@id/img_seller_migration_account_warning"
                app:layout_constraintTop_toTopOf="@id/img_seller_migration_account_warning"
                app:layout_constraintBottom_toBottomOf="@id/img_seller_migration_account_warning"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_seller_migration_account_header_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:textColor="@color/Neutral_N700_96"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                app:layout_constraintStart_toEndOf="@id/tv_seller_migration_account_header_start"
                app:layout_constraintTop_toTopOf="@id/img_seller_migration_account_warning"
                app:layout_constraintBottom_toBottomOf="@id/img_seller_migration_account_warning"
                tools:text="@string/seller_migration_bottom_sheet_redirected_dates"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</androidx.constraintlayout.widget.ConstraintLayout>