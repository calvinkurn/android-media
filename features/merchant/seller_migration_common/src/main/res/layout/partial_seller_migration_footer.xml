<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingEnd="@dimen/layout_lvl2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/sellerMigrationBottomSheetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seller_migration_bottom_sheet_button"
        app:unifyButtonSize="medium"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/sellerMigrationBottomSheetLink"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:gravity="center"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/sellerMigrationBottomSheetButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>