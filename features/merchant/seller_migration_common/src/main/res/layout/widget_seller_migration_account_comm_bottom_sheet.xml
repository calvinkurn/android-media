<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/partial_seller_migration_account_header"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_seller_migration_account_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/seller_migration_account_bottom_sheet_detail"
            android:textColor="@color/Neutral_N700_96"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl3"
            android:layout_marginBottom="@dimen/layout_lvl2"
            app:typographyType="body_3"
            app:typographyWeight="reguler"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_seller_migration_account_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:itemCount="4"
            tools:listitem="@layout/item_seller_migration_account_comm"/>

        <include
            layout="@layout/partial_seller_migration_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl3"/>

    </LinearLayout>

</ScrollView>