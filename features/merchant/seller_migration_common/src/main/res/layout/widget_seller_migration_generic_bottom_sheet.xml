<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/accountSellerMigrationBottomsheetImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/account_seller_migration_bottomsheet_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:text="@string/seller_migration_generic_bottom_sheet_title"
        android:gravity="center"
        android:maxLines="2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/accountSellerMigrationBottomsheetImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        app:typographyType="heading_2"
        app:typographyWeight="bold"/>

    <include layout="@layout/partial_seller_migration_warning"
        android:id="@+id/sellerMigrationWarningCard"
        android:layout_below="@id/account_seller_migration_bottomsheet_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"/>

    <include layout="@layout/partial_seller_migration_multi_icon_information"
        android:id="@+id/seller_migration_multi_icon_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerMigrationWarningCard" />

    <include layout="@layout/partial_seller_migration_footer"
        android:layout_below="@id/seller_migration_multi_icon_information"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl3"/>

</RelativeLayout>