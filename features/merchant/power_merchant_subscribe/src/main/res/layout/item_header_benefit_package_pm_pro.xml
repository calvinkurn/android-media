<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerHeaderBenefitPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/Unify_N50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitleHeaderBenefitPackage"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            android:text="@string/pm_date_based_on_your_sell"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDescHeaderBenefitPackage"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="heading_5"
            android:text="@string/pm_title_profit_package_section"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleHeaderBenefitPackage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvNextUpdateBenefitPackage"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/containerHeaderBenefitPackage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/Unify_N700_68"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:text="@string/pm_next_update_benefit_package" />

</androidx.constraintlayout.widget.ConstraintLayout>