<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_partial_benefit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_with_shadow"
    android:padding="@dimen/dp_10">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/pm_label_benefit_header"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:fontSize="title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/ic_power_merchant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/pm_exclusive_promo"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:fontSize="micro"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
             />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/pm_exclusive_promo_desc"
            app:fontSize="micro"
            app:layout_constraintStart_toStartOf="@+id/textViewCompat2"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat2" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_market"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/pm_label_market_insight"
            android:textStyle="bold"
            app:fontSize="micro"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:minLines="2"
            app:fontSize="micro"
            android:text="@string/pm_label_market_insight_desc"
            app:layout_constraintStart_toStartOf="@+id/textViewCompat4"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat4" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_topads_credit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/pm_label_topads_credit"
            android:textStyle="bold"
            app:fontSize="micro"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat7"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:minLines="2"
            app:fontSize="micro"
            android:text="@string/pm_credit_desc"
            app:layout_constraintStart_toStartOf="@+id/textViewCompat6"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat6" />

        <View
            android:id="@+id/view_line_pm"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/imageView8"
            tools:layout_editor_absoluteX="10dp"
            />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Fitur Khusus Power Merchant"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontSize="micro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_learn_more_benefit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/pm_label_learn_more_benefit"
            app:fontSize="micro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>