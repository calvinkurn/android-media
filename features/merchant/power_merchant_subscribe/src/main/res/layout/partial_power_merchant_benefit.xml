<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_partial_benefit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@drawable/card_background_with_shadow"
    android:padding="@dimen/dp_20">

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/pm_label_benefit_header"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontSize="titleBig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textViewCompat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="@string/pm_exclusive_promo"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_20"
        app:fontSize="title"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textViewCompat3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/pm_exclusive_promo_desc"
        app:fontSize="title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewCompat2"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompat2" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_64"
        android:layout_marginLeft="@dimen/dp_8"
        app:srcCompat="@drawable/ic_power_merchant_subscribe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewCompat2"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCompat3"
        android:layout_marginStart="@dimen/dp_8" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textViewCompat4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/pm_label_market_insight"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontSize="title"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompat3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textViewCompat5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/pm_label_market_insight_desc"
        app:fontSize="title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewCompat4"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompat4" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_64"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:srcCompat="@drawable/ic_market"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCompat5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewCompat4" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textViewCompat6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/dp_22"
        android:text="@string/pm_label_topads_credit"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontSize="title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompat5" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textViewCompat7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pm_credit_desc"
        android:layout_marginTop="@dimen/dp_5"
        app:fontSize="title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewCompat6"
        app:layout_constraintTop_toBottomOf="@id/textViewCompat6"
        tools:layout_editor_absoluteY="270dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_64"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        app:srcCompat="@drawable/ic_topads_credit"
        app:layout_constraintBottom_toBottomOf="@id/textViewCompat7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewCompat6" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textViewCompat8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/pm_label_cost_header"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontSize="title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompat7"
        app:layout_constraintHorizontal_bias="0"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textViewCompat9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/pm_label_cost_desc"
        app:fontSize="title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompat8"
        app:layout_constraintStart_toStartOf="@id/textViewCompat8" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_64"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        app:srcCompat="@drawable/ic_cost_management"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textViewCompat9"
        app:layout_constraintTop_toTopOf="@+id/textViewCompat8"/>

    <View
        android:id="@+id/view_line_pm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/pm_line_color"
        app:layout_constraintTop_toBottomOf="@+id/textViewCompat9"
        android:layout_marginTop="@dimen/dp_20"/>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/textViewCompat10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/pm_label_benefit_feature_header"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontSize="title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@+id/view_line_pm" />

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/txt_learn_more_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/dp_10"
        android:lineSpacingExtra="@dimen/sp_4"
        android:text="@string/pm_label_learn_more_benefit"
        app:fontSize="title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCompat10" />

</android.support.constraint.ConstraintLayout>
