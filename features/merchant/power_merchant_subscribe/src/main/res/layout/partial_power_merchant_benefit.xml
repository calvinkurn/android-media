<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_partial_benefit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_with_shadow"
    android:padding="@dimen/dp_10">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:padding="@dimen/dp_10">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/pm_label_benefit_header"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontSize="titleBig"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@drawable/ic_power_merchant_subscribe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginStart="@dimen/dp_8" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/pm_exclusive_promo"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontSize="title"
            app:layout_constraintBottom_toTopOf="@+id/textViewCompat3"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/pm_exclusive_promo_desc"
            app:fontSize="title"
            android:lineSpacingExtra="@dimen/dp_2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewCompat2"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat2" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_market"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewCompat4" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/pm_label_market_insight"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontSize="title"
            app:layout_constraintBottom_toTopOf="@id/textViewCompat9"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat3"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/pm_label_market_insight_desc"
            app:fontSize="title"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewCompat4"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat4"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@drawable/ic_topads_credit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewCompat6" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/pm_label_topads_credit"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontSize="title"
            app:layout_constraintBottom_toTopOf="@id/textViewCompat7"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat9"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/pm_credit_desc"
            app:fontSize="title"
            app:layout_constraintBottom_toBottomOf="@id/imageView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewCompat6"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat6" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@drawable/ic_cost_management"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewCompat5" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:text="Biaya Layanan Hanya 1%"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontSize="title"
            app:layout_constraintBottom_toTopOf="@+id/txt8"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat7"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt8"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_5"
            android:text="Biaya layanan Power Merchant hanya 1%, dibayarkan setiap produk terjual."
            app:fontSize="title"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat5"
            app:layout_constraintVertical_chainStyle="packed" />
        <!--TODO milhamj-->

        <View
            android:id="@+id/view_line_pm"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/pm_line_color"
            app:layout_constraintTop_toBottomOf="@+id/txt8"
            android:layout_marginTop="@dimen/dp_20"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/textViewCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/pm_label_benefit_feature_header"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontSize="title"
            app:layout_constraintStart_toStartOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/view_line_pm" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_learn_more_benefit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="2dp"
            android:text="@string/pm_label_learn_more_benefit"
            app:fontSize="title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewCompat"
            app:layout_constraintTop_toBottomOf="@+id/textViewCompat" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>