<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl8"
        android:src="@drawable/ic_pm_registration_header" />

    <com.tokopedia.unifyprinciples.Typography
        android:text="@string/power_merchant_registration_status_label"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_gravity="center"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textStatus"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_gravity="center"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        tools:text="Menunggu Verifikasi" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textDescription"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:gravity="center"
        app:typographyType="body_2"
        tools:text="Kami akan melakukan verifikasi dokumen dalam 1x24 jam. Hasil verifikasi akan dikirimkan melalui Email dan Chat Tokopedia."/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnVerification"
        android:text="@string/power_merchant_kyc_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:unifyButtonSize="medium" />
</LinearLayout>