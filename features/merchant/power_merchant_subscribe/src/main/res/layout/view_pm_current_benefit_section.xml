<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmExpandableTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/pm_benefits_that_you_can_get"
        android:textColor="@color/Unify_NN950_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_1"
        app:typographyWeight="bold" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icPmExpandableTitleIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_name="CHEVRON_DOWN"
        app:layout_constraintBottom_toBottomOf="@+id/tvPmExpandableTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPmExpandableTitle" />

    <View
        android:id="@+id/viewPmExpandableHorLine"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPmExpandableTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>