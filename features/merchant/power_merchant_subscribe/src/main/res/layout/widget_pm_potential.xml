<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/unify_space_12"
    android:background="@color/Neutral_N0"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingEnd="@dimen/layout_lvl2"
    android:paddingBottom="@dimen/layout_lvl1">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmPotentialDescription"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:text="@string/pm_registration_potential_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPmPotential"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPmPotentialDescription"
        tools:itemCount="4"
        tools:listitem="@layout/item_pm_potential" />
</androidx.constraintlayout.widget.ConstraintLayout>