<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_pm_grey_rounded_corner"
    android:padding="@dimen/spacing_lvl4">

    <ImageView
        android:id="@+id/imageFreeShipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:layout_constraintBottom_toTopOf="@id/textDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textTitle"
        app:layout_constraintTop_toTopOf="@id/textTitle"
        app:srcCompat="@drawable/ic_free_shipping"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifycomponents.Label
        android:layout_width="0dp"
        android:layout_height="@dimen/power_merchant_label_height"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:gravity="center"
        app:labelType="general_dark_red"
        app:labelTitle="@string/power_merchant_label_new"
        app:layout_constraintTop_toBottomOf="@id/imageFreeShipping"
        app:layout_constraintRight_toRightOf="@id/imageFreeShipping"
        app:layout_constraintLeft_toLeftOf="@id/imageFreeShipping"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:gravity="center_vertical"
        android:textColor="@color/light_N700_96"
        android:text="@string/power_merchant_free_shipping_transition_title"
        app:layout_constraintRight_toLeftOf="@id/imageChevronRight"
        app:layout_constraintLeft_toRightOf="@id/imageFreeShipping"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/spacing_lvl3"
        android:gravity="center_vertical"
        android:textColor="@color/light_N700_68"
        app:layout_constraintLeft_toRightOf="@id/imageFreeShipping"
        app:layout_constraintRight_toLeftOf="@id/imageChevronRight"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:typographyType="body_3"
        tools:text="@string/power_merchant_free_shipping_transition_description" />

    <ImageView
        android:id="@+id/imageChevronRight"
        android:src="@drawable/ic_pm_chevron_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/power_merchant_chevron_right_size"
        android:layout_height="@dimen/power_merchant_chevron_right_size"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>