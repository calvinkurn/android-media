<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmNextGradeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl1"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingTop="@dimen/layout_lvl1"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/layout_lvl1"
        app:typographyType="body_2"
        tools:background="@drawable/bg_pm_next_grade_diamond"
        tools:text="Capai Level 4 dan skor min. 70 untuk naik jadi PM Diamond di periode update selanjutnya dan nikmati:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPmNextGradeBenefit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutPmNextGradeInfo" />
</LinearLayout>