<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/containerPmTnC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/appBarPmTnC" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarPmTnC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/Unify_N0"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingTop="@dimen/unify_space_12"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/unify_space_12">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnPmTncOke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pm_content_slider_last_slide_button" />
    </com.google.android.material.appbar.AppBarLayout>
</RelativeLayout>
