<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingRight="@dimen/spacing_lvl4">

    <com.tokopedia.unifyprinciples.Typography
        android:text="@string/power_merchant_benefit_title"
        android:textColor="@color/Neutral_N700_68"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:typographyWeight="bold"
        app:typographyType="body_3"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listBenefit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textLearnMore"
        android:text="@string/power_merchant_learn_more"
        android:textColor="@color/pm_main_color"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyWeight="bold"
        app:typographyType="body_3"/>
</LinearLayout>