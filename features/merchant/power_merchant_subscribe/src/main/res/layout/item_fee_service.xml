<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_fee_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/pm_fee_service"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintEnd_toStartOf="@id/text_label_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_label_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:background="@drawable/bg_rounded_corners_rn_500"
        android:padding="4dp"
        android:text="@string/pm_new_label"
        android:textColor="@color/Unify_NN0"
        android:textSize="@dimen/unify_font_10"
        app:layout_constraintBottom_toBottomOf="@id/text_fee_service"
        app:layout_constraintStart_toEndOf="@id/text_fee_service"
        app:layout_constraintTop_toTopOf="@id/text_fee_service"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_fee_service" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmLearnFee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/pm_learn_fee_service"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toStartOf="@id/chevron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/chevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        app:icon_color_light_disabled="@color/Unify_NN900"
        app:icon_color_light_enable="@color/Unify_NN900"
        app:icon_enable_state="true"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="@id/tvPmLearnFee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPmLearnFee" />

</androidx.constraintlayout.widget.ConstraintLayout>