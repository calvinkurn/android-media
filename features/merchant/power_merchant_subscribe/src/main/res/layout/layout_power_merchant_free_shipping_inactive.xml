<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lvl4">

    <ImageView
        android:id="@+id/imageFreeShipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:layout_constraintBottom_toTopOf="@id/textDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textTitle"
        app:layout_constraintTop_toTopOf="@id/textTitle"
        app:srcCompat="@drawable/ic_free_shipping"
        tools:ignore="ContentDescription" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintLeft_toRightOf="@id/imageFreeShipping"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Tokomu memenuhi syarat untuk Bebas Ongkir!" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:gravity="center_vertical"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintLeft_toRightOf="@id/imageFreeShipping"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:typographyType="body_3"
        tools:text="Buat pembeli lebih tertarik &amp; tingkatkan penjualanmu" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnCTA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:text="@string/power_merchant_learn_more"
        app:layout_constraintLeft_toLeftOf="@id/textDescription"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDescription"
        app:unifyButtonSize="small"
        tools:text="Pelajari Selengkapnya" />
</androidx.constraintlayout.widget.ConstraintLayout>