<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingTop="@dimen/layout_lvl1"
    android:paddingEnd="@dimen/layout_lvl2"
    android:paddingBottom="@dimen/layout_lvl1">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/icPmBenefitItem"
        android:layout_width="@dimen/pm_spacing_18dp"
        android:layout_height="@dimen/pm_spacing_18dp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmBenefitItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N700"
        app:typographyType="body_2"
        tools:text="Akses ke Rekening Premium, Saldo Prioritas, dan akses prioritas ke Modal Toko" />
</LinearLayout>