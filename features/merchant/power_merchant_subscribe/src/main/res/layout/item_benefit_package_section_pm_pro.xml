<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/spacing_lvl4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgBenefitPackageSection"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitleBenefitPackageSection"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/dp_12"
            android:text="@string/pm_title_benefit_package_section"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/imgBenefitPackageSection"
            app:layout_constraintTop_toBottomOf="@id/imgBenefitPackageSection"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDescBenefitPackageSection"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/dp_12"
            android:text="@string/pm_desc_benefit_package_section_2"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvTitleBenefitPackageSection"
            app:layout_constraintTop_toBottomOf="@id/tvTitleBenefitPackageSection" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBenefitPackagePMPro"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_benefit_package_pm_pro"
            tools:itemCount="6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tvTitleBenefitPackageSection"
            app:layout_constraintStart_toStartOf="@id/tvTitleBenefitPackageSection"
            app:layout_constraintTop_toBottomOf="@id/tvDescBenefitPackageSection" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>