<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/spacing_lvl4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/pm_spacing_310dp"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/bgBenefitPackage"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="@dimen/layout_lvl0"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constrainedHeight="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/imgBenefitPackageSection"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitleBenefitPackageSection"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="12dp"
            android:textColor="@color/Unify_Static_Black_96"
            tools:text="@string/pm_title_benefit_package_upgrade_section"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/imgBenefitPackageSection"
            app:layout_constraintTop_toBottomOf="@id/imgBenefitPackageSection"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvDescBenefitPackageSection"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginEnd="12dp"
            android:minLines="4"
            tools:text="@string/pm_desc_level_2_benefit_package_section"
            android:textColor="@color/Unify_Static_Black_68"
            app:typographyType="body_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvTitleBenefitPackageSection"
            app:layout_constraintTop_toBottomOf="@id/tvTitleBenefitPackageSection" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBenefitPackageItem"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_benefit_package_list"
            tools:itemCount="4"
            app:layout_constraintEnd_toEndOf="@id/tvTitleBenefitPackageSection"
            app:layout_constraintStart_toStartOf="@id/tvTitleBenefitPackageSection"
            app:layout_constraintTop_toBottomOf="@id/tvDescBenefitPackageSection" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>