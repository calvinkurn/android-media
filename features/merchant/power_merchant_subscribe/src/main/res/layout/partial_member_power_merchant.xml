<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_partial_member"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background_pm"
    android:paddingBottom="@dimen/dp_16"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/card_background_with_shadow"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <com.tokopedia.design.component.TextViewCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            app:fontSize="micro"
            app:textViewTheme="lightSecondary"
            android:text="@string/pm_label_member_status" />

        <com.tokopedia.design.component.TextViewCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            app:fontSize="title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/pm_label_member" />

        <RelativeLayout
            android:id="@+id/member_cancellation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <View
                android:id="@+id/view_line_pm"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pm_line_color" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_cancel_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_8"
                app:fontSize = "micro"
                app:textViewTheme="lightSecondary"
                android:text="@string/pm_label_member_cancel"
                android:layout_below="@+id/view_line_pm" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignBottom="@+id/txt_cancel_member"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_nav_arrow_right"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>



    </LinearLayout>

</FrameLayout>
