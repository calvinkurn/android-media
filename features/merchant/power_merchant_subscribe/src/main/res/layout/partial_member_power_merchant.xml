<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_partial_member"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/card_background_with_shadow"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <com.tokopedia.design.component.TextViewCompat
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="@string/pm_label_member_status" />

        <com.tokopedia.design.component.TextViewCompat
            style="@style/TextView.SubHeadline.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/pm_label_member" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_cancel_member"
                style="@style/TextView.Small.BlackSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/pm_label_cancellation_header" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_cancel_member"
                android:layout_alignBottom="@+id/txt_cancel_member"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:src="@drawable/ic_drop_down" />

        </RelativeLayout>



    </LinearLayout>

</FrameLayout>
