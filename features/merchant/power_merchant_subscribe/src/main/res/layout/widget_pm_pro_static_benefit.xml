<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:text="@string/pm_pm_pro_statistic_benefit_description"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPmProStaticBenefit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        tools:itemCount="4"
        tools:listitem="@layout/item_pm_grade_benefit" />
</LinearLayout>