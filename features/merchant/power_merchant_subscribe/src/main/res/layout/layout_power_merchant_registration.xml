<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl8"
        android:src="@drawable/ic_pm_registration_header"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textTitle"
        android:text="@string/power_merchant_register_title"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/imageHeader"
        app:typographyWeight="bold"
        app:typographyType="heading_2"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textDescription"
        android:textColor="@color/Unify_N700"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:typographyWeight="reguler"
        app:typographyType="body_2"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textHowToUpgrade"
        android:text="@string/power_merchant_how_to_upgrade"
        android:textColor="@color/Unify_N700_68"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/textDescription"
        app:typographyType="small"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textRegister"
        android:text="@string/power_merchant_register"
        android:textColor="@color/Unify_N700"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:drawablePadding="@dimen/spacing_lvl3"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintTop_toBottomOf="@id/textHowToUpgrade"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textVerification"
        android:text="@string/power_merchant_verification_hint"
        android:textColor="@color/Unify_N700"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:drawablePadding="@dimen/spacing_lvl3"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintTop_toBottomOf="@id/textRegister"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textShopScore"
        android:text="@string/power_merchant_shop_score_hint"
        android:textColor="@color/Unify_N700"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:drawablePadding="@dimen/spacing_lvl3"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:layout_constraintTop_toBottomOf="@id/textVerification"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/spacing_lvl4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/spacing_lvl4" />
</androidx.constraintlayout.widget.ConstraintLayout>