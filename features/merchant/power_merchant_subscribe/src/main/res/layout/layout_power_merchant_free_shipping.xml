<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    android:layout_marginRight="@dimen/spacing_lvl4"
    android:orientation="vertical">

    <include
        android:id="@+id/activeLayout"
        layout="@layout/layout_power_merchant_free_shipping_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <include
        android:id="@+id/inActiveLayout"
        layout="@layout/layout_power_merchant_free_shipping_inactive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</com.tokopedia.unifycomponents.CardUnify>