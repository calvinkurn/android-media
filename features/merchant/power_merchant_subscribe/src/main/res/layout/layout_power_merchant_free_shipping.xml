<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_lvl4"
    android:layout_marginLeft="@dimen/spacing_lvl4"
    android:layout_marginEnd="@dimen/spacing_lvl4"
    android:layout_marginRight="@dimen/spacing_lvl4">
    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            android:id="@+id/activeLayout"
            layout="@layout/layout_power_merchant_free_shipping_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <include
            android:id="@+id/inActiveLayout"
            layout="@layout/layout_power_merchant_free_shipping_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </com.tokopedia.unifycomponents.CardUnify>

    <include
        android:id="@+id/transitionLayout"
        layout="@layout/layout_power_merchant_free_shipping_transition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</FrameLayout>