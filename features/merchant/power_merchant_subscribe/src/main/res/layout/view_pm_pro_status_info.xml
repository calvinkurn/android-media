<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icPmProStatusInfo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="INFORMATION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmProStatusInfo"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/pm_check_pm_pro_status_info"
        android:textColor="@color/Unify_G500"
        app:layout_constraintBottom_toBottomOf="@id/icPmProStatusInfo"
        app:layout_constraintStart_toEndOf="@+id/icPmProStatusInfo"
        app:layout_constraintTop_toTopOf="@id/icPmProStatusInfo"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>