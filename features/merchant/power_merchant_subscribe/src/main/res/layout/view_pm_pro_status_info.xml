<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pm_white_bordered_grey">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icPmProStatusInfo"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/unify_space_12"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/unify_space_12"
        android:background="@drawable/bg_pm_oval_green"
        android:padding="@dimen/unify_space_4"
        app:icon_color_light_enable="@color/pm_static_g500_dms"
        app:icon_name="INFORMATION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmProStatusInfo"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:text="@string/pm_check_pm_pro_status_info"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icPmProStatusInfo"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <com.tokopedia.iconunify.IconUnify
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl1"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>