<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineExpandableStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/layout_lvl2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineExpandableEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/layout_lvl2" />

    <com.tokopedia.power_merchant.subscribe.view.viewcomponent.PmProCurrentBenefitSectionView
        android:id="@+id/viewPmProBenefitSection"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible"/>

    <com.tokopedia.power_merchant.subscribe.view.viewcomponent.PmCurrentBenefitSectionView
        android:id="@+id/viewPmBenefitSection"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/guidelineExpandableEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineExpandableStart"
        app:layout_constraintTop_toBottomOf="@id/viewPmProBenefitSection"
        tools:visibility="visible"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierPmExpandable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="viewPmBenefitSection, viewPmProBenefitSection" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPmExpandableItem"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guidelineExpandableEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineExpandableStart"
        app:layout_constraintTop_toBottomOf="@+id/viewPmBenefitSection"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="5"
        tools:listitem="@layout/item_pm_expandable_widget_item" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerPmPro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvPmExpandableItem"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSetMembershipStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/dividerPmPro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/pm_set_membership_status" />

</androidx.constraintlayout.widget.ConstraintLayout>