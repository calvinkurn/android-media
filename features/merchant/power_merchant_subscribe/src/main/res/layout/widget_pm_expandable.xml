<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineExpandableStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/layout_lvl2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineExpandableEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/layout_lvl2" />

    <com.tokopedia.power_merchant.subscribe.view.viewcomponent.PmCurrentBenefitSectionView
        android:id="@+id/viewPmBenefitSection"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/guidelineExpandableEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineExpandableStart"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.power_merchant.subscribe.view.viewcomponent.PmProCurrentBenefitSectionView
        android:id="@+id/viewPmProBenefitSection"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guidelineExpandableEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineExpandableStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierPmExpandable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="viewPmBenefitSection, viewPmProBenefitSection" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPmExpandableItem"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unify_space_12"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guidelineExpandableEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineExpandableStart"
        app:layout_constraintTop_toBottomOf="@+id/barrierPmExpandable"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="5"
        tools:listitem="@layout/item_pm_expandable_widget_item" />
</androidx.constraintlayout.widget.ConstraintLayout>