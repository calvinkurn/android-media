<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:background="@drawable/bg_pm_next_update_info_widget"
        android:orientation="vertical"
        android:padding="@dimen/layout_lvl2">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pm_next_update_pm_grade_info"
            android:textColor="@color/Unify_N700"
            app:typographyType="body_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPmNextGradeUpdateDateInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:text="@string/pm_label_next_three_months_pm_grade_update"
            app:typographyType="body_2"
            app:typographyWeight="bold" />
    </LinearLayout>
</RelativeLayout>