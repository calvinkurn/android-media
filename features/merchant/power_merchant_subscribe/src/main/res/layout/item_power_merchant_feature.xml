<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="@dimen/power_merchant_feature_card_width"
    android:paddingTop="@dimen/spacing_lvl5"
    android:paddingBottom="@dimen/spacing_lvl5"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingRight="@dimen/spacing_lvl4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/power_merchant_image_icon_large"
            tools:src="@drawable/ic_free_shipping"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:textColor="@color/light_N700"
            app:typographyWeight="bold"
            app:typographyType="heading_4"
            tools:text="Fitur Unggulan" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/power_merchant_feature_description_height"
            android:textColor="@color/light_N700"
            app:typographyType="body_3"
            tools:text="Optimalkan penjualan dengan **Broadcast Chat, Modal Toko,**dan **fitur eksklusif**lainnya. " />
    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>