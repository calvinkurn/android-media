<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleBenefitPmProNewSeller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="heading_5"
        android:textColor="@color/Unify_N700_96"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/pm_get_exclusive_benefit_of_being_pm_pro_new_seller"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBenefitExclusivePmPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleBenefitPmProNewSeller"
        tools:itemCount="4"
        tools:listitem="@layout/item_pm_pro_upsale_benefit" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerBenefitExclusivePmPro"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvBenefitExclusivePmPro"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvLearnMoreBenefitExclusive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:text="@string/power_merchant_benefit_learn_more"
        android:textColor="@color/Unify_G500"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerBenefitExclusivePmPro"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>