<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgPmHeaderBackdrop"
        android:layout_width="0dp"
        android:layout_height="@dimen/gmc_dimen_76dp"
        android:orientation="horizontal"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="0"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imgPmHeaderImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgPmHeaderBackdrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgPmHeaderBackdrop"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmHeaderDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/pm_registration_header_pm"
        android:textColor="@color/Unify_Static_White"
        app:layout_constraintBottom_toBottomOf="@+id/imgPmHeaderImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgPmHeaderImage"
        app:layout_constraintTop_toTopOf="@+id/imgPmHeaderImage"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>