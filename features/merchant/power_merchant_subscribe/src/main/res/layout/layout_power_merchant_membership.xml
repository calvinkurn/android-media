<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@color/Unify_N0"
        android:padding="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/imageWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="ContentDescription"/>
    
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textWarning"
            android:textColor="@color/Unify_N700"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginStart="@dimen/spacing_lvl4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageWarning"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="body_2"
            tools:text="Pengajuan berhenti Power Merchant berhasil. Layanan otomatis berhenti pada 14 Mei 2020, Pukul 11.31 WIB"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnUpgrade"
            android:text="@string/power_merchant_upgrade_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:layout_constraintLeft_toLeftOf="@id/textWarning"
            app:layout_constraintRight_toRightOf="@id/textWarning"
            app:layout_constraintTop_toBottomOf="@id/textWarning"
            app:unifyButtonSize="medium" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/imageMembership"
        android:src="@drawable/ic_pm_membership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/containerWarning"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textStatusLabel"
        android:text="@string/power_merchant_status_label"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/power_merchant_horizontal_spacing_small"
        android:layout_marginStart="@dimen/power_merchant_horizontal_spacing_small"
        app:layout_constraintLeft_toRightOf="@id/imageMembership"
        app:layout_constraintTop_toTopOf="@id/imageMembership"
        app:layout_constraintBottom_toTopOf="@id/textStatus"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textStatus"
        tools:text="Aktif"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintBottom_toBottomOf="@id/imageMembership"
        app:layout_constraintTop_toBottomOf="@id/textStatusLabel"
        app:layout_constraintLeft_toLeftOf="@id/textStatusLabel"
        app:typographyType="heading_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textPerformanceLabel"
        android:text="@string/power_merchant_shop_performance_label"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:layout_constraintTop_toBottomOf="@id/imageMembership"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textShopScore"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintTop_toBottomOf="@id/textPerformanceLabel"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:typographyType="heading_2"
        tools:text="32" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textShopMaxScore"
        android:text="@string/power_merchant_max_score"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:layout_constraintTop_toTopOf="@id/textShopScore"
        app:layout_constraintBottom_toBottomOf="@id/textShopScore"
        app:layout_constraintLeft_toRightOf="@id/textShopScore"
        app:typographyType="body_1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textShopScoreDescription"
        android:textColor="@color/Unify_N700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl3"
        app:layout_constraintTop_toTopOf="@id/textShopScore"
        app:layout_constraintBottom_toBottomOf="@id/textShopScore"
        app:layout_constraintLeft_toRightOf="@id/textShopMaxScore"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        tools:text="“Kurang, tingkatkan lagi!”" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textShopScoreHint"
        android:textColor="@color/Unify_N700"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/textShopScore"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintRight_toRightOf="@id/rightGuideline"
        app:typographyType="body_2"
        tools:text="Pertahankan skor performa toko **minimum 75 poin** untuk tetap menjadi Power Merchant." />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnPerformanceTips"
        android:text="@string/power_merchant_performance_tips"
        android:visibility="gone"
        android:layout_width="@dimen/power_merchant_tips_btn_size"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl6"
        app:layout_constraintLeft_toLeftOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/textShopScoreHint"
        app:unifyButtonSize="medium"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/spacing_lvl4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/spacing_lvl4" />
</androidx.constraintlayout.widget.ConstraintLayout>