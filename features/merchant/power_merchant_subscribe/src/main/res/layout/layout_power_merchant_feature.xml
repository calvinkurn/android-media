<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.ContainerUnify
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_lvl5"
    app:container_color="GREEN"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:text="@string/power_merchant_exclusive_feature"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pm_feature_title"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listFeature"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnLearnMore"
        android:text="@string/power_merchant_learn_more"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:unifyButtonSize="large"
        app:unifyButtonVariant="ghost"
        tools:visibility="visible" />
</com.tokopedia.unifycomponents.ContainerUnify>