<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.ContainerUnify
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_lvl5"
    app:container_color="GREEN"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textTitle"
        android:text="@string/power_merchant_exclusive_feature"
        android:textColor="@color/Unify_N700_68"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_lvl4"
        android:paddingRight="@dimen/spacing_lvl4"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listFeature"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.tokopedia.unifycomponents.ContainerUnify>