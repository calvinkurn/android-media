<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPmProBenefitPackage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/bgBenefitPackageStatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@id/containerDescBenefitPackage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unify_image_corner_radius="0"
            tools:src="@drawable/bg_pm_pro_advanced_benefit_package" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitleBenefitPackageStatus"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:text="@string/pm_title_benefit_package_status"
            android:textColor="@color/Unify_Static_Black_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_1"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/labelPmProStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:layout_constraintBottom_toBottomOf="@id/bgBenefitPackageStatus"
            app:layout_constraintStart_toStartOf="@id/tvTitleBenefitPackageStatus"
            app:layout_constraintTop_toBottomOf="@id/tvTitleBenefitPackageStatus"
            tools:text="ADVANCED" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iconPmProStatus"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginStart="@dimen/spacing_lvl2"
            app:icon_color_light_enable="@color/pm_static_525A67_dms"
            app:icon_name="INFORMATION"
            app:layout_constraintBottom_toBottomOf="@id/labelPmProStatus"
            app:layout_constraintStart_toEndOf="@id/labelPmProStatus"
            app:layout_constraintTop_toTopOf="@id/labelPmProStatus" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerDescBenefitPackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bgBenefitPackageStatus">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iconPmProDowngradeStatus"
                android:layout_width="@dimen/gmc_dimen_20dp"
                android:layout_height="@dimen/gmc_dimen_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/pm_pro_downgrade_status" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvNextUpdatePmProStatus"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/iconPmProDowngradeStatus"
                app:layout_constraintStart_toEndOf="@id/iconPmProDowngradeStatus"
                app:layout_constraintTop_toTopOf="@id/iconPmProDowngradeStatus"
                app:typographyType="body_3"
                tools:text="Update selanjutnya: 5 Juli 2021. Raih Level 3 untuk dapat paket keuntungan Expert. Selengkapnya " />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>