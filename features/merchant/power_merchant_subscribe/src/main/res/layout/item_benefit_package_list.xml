<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardItemBenefitPackage"
    app:card_type="clear"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/icBenefitPackageItem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="@dimen/spacing_lvl3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvBenefitPackageItem"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl3"
            app:typographyType="body_3"
            android:layout_marginEnd="@dimen/spacing_lvl3"
            android:textColor="@color/Unify_Static_Black_96"
            app:layout_constraintStart_toEndOf="@id/icBenefitPackageItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/icBenefitPackageItem"
            app:layout_constraintBottom_toBottomOf="@id/icBenefitPackageItem"
            tools:text="Ekstra 9% kredit TopAds dengan berlangganan top-up"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>