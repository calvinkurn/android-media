<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmQuestionnaireTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:text="Kenapa Anda ingin berhenti menjadi Power Merchant" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPmQuestionnaireInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        app:typographyType="display_3"
        android:layout_marginTop="16dp"
        android:text="@string/pm_questionnaire_chip_info" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPmQuestionnaireOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:itemCount="5"
        tools:listitem="@layout/item_pm_questionnaire_chip_option_item" />

</LinearLayout>