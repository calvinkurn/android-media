<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background_with_shadow"
    android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontSize="small"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/pm_label_member_status" />

            <com.tokopedia.design.component.TextViewCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                style="@style/TextView.Title.Bold"
                android:text="@string/pm_label_member" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/TextView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pm_period" />
        </LinearLayout>


    <com.tokopedia.design.component.TextViewCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/pm_label_member_cancel" />

</LinearLayout>