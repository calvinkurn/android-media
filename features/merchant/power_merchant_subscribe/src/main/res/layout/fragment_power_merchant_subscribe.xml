<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.PowerMerchantSubscribeFragment">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_footer_submit">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_top_1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_all_promo" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_join_1"
                style="@style/TextView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_top_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/pm_label_join_1"
                android:textStyle="bold" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_join_2"
                style="@style/TextView.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_join_1"
                android:layout_centerHorizontal="true"
                android:text="@string/pm_label_join_2"
                android:textStyle="bold" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_info"
                style="@style/TextView.Title"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_join_2"
                android:layout_centerHorizontal="true"
                android:text="@string/pm_label_info"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_10"/>

            <include layout="@layout/member_power_merchant"
                android:id="@+id/cardview_member"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/txt_info"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_10"/>

            <include layout="@layout/power_merchant_benefit"
                android:id="@+id/cardview_benefit"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_below="@id/cardview_member"
                android:layout_marginBottom="@dimen/dp_20"/>


            <android.support.v7.widget.CardView
                android:id="@+id/pm_ticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:cardCornerRadius="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                app:cardBackgroundColor="@color/ticker_blue"
                android:layout_below="@+id/cardview_benefit"
                android:background="@drawable/border_rectangle_yellow">

                <com.tokopedia.design.component.TextViewCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_14"
                    android:text="@string/pm_label_price_cashback"
                    style="@style/TextView.Small"/>

            </android.support.v7.widget.CardView>


            <include layout="@layout/tnc_power_merchant"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_below="@+id/pm_ticker" />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_footer_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shadow_top"
        android:padding="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <com.tokopedia.design.component.ButtonCompat
            style="@style/Button.Submit.Green.Full"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/pm_label_button_activate" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>