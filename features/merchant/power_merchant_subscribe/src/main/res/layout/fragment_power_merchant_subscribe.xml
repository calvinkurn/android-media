<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:visibility="visible">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.tokopedia.power_merchant.subscribe.view.ui.PowerMerchantRegistrationView
                android:id="@+id/registrationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.tokopedia.power_merchant.subscribe.view.ui.PowerMerchantMembershipView
                android:id="@+id/membershipLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.tokopedia.power_merchant.subscribe.view.ui.PowerMerchantFreeShippingView
                android:id="@+id/freeShippingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl5"/>

            <com.tokopedia.unifycomponents.LocalLoad
                android:id="@+id/freeShippingError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginLeft="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl4"
                android:layout_marginRight="@dimen/spacing_lvl4"
                app:unify_local_load_description="@string/power_merchant_click_to_reload"
                app:unify_local_load_title="@string/power_merchant_free_shipping_load_error"
                android:layout_marginTop="@dimen/spacing_lvl5"
                android:visibility="gone" />

            <com.tokopedia.power_merchant.subscribe.view.ui.PowerMerchantFeatureView
                android:id="@+id/featureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl6"
                android:visibility="gone"/>

            <com.tokopedia.power_merchant.subscribe.view.ui.PowerMerchantBenefitView
                android:id="@+id/benefitLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl5"
                android:layout_marginBottom="@dimen/spacing_lvl7"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnCallToAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:visibility="gone"
        app:cardElevation="@dimen/layout_lvl2"
        app:contentPaddingBottom="@dimen/spacing_lvl3"
        app:contentPaddingLeft="@dimen/spacing_lvl4"
        app:contentPaddingRight="@dimen/spacing_lvl4"
        app:contentPaddingTop="@dimen/spacing_lvl3"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/power_merchant_register_now"
            android:visibility="gone"
            app:unifyButtonSize="medium" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textCancelMembership"
            android:textColor="@color/light_N700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl3"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:visibility="gone"
            android:gravity="center"
            app:typographyType="body_3"
            tools:text="Berhenti jadi Power Merchant"
            tools:visibility="visible"/>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:visibility="gone"/>
</LinearLayout>