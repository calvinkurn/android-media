<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/pm_start_gradient">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_footer_submit"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_top_1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/bg_all_promo" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_join_1"
                style="@style/TextView.Title.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_top_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/pm_label_join_1" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_join_2"
                style="@style/TextView.Title.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_join_1"
                android:layout_centerHorizontal="true"
                android:text="@string/pm_label_join_2" />

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_info"
                style="@style/TextView.Small.BlackSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_join_2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_22"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sp_6"
                android:text="@string/pm_label_info" />


            <FrameLayout
                android:id="@+id/ticker_yellow_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_info"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/dp_24">

                <android.support.v7.widget.CardView
                    android:id="@+id/ticker_yellow_cancellation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_corner"
                    app:cardBackgroundColor="@color/ticker_yellow"
                    app:cardCornerRadius="@dimen/dp_8">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_8">

                        <com.tokopedia.design.component.TextViewCompat
                            style="@style/TextView.Medium.FontMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="@dimen/sp_6"
                            android:text="@string/pm_label_cancellation_header" />

                        <com.tokopedia.design.component.TextViewCompat
                            style="@style/TextView.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/pm_label_cancellation_duration" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ticker_warning_cropped" />

                </android.support.v7.widget.CardView>
            </FrameLayout>

            <include
                android:id="@+id/base_partial_member"
                layout="@layout/partial_member_power_merchant"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_below="@id/ticker_yellow_container"
                android:layout_marginBottom="@dimen/dp_24"/>

            <include
                android:id="@+id/base_partial_benefit"
                layout="@layout/partial_power_merchant_benefit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/base_partial_member"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_20" />

            <FrameLayout
                android:id="@+id/ticker_blue_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_partial_benefit"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_10"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:id="@+id/pm_ticker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_rectangle_yellow"
                    app:cardBackgroundColor="@color/ticker_blue"
                    app:cardCornerRadius="@dimen/dp_8">

                    <com.tokopedia.design.component.TextViewCompat
                        style="@style/TextView.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_5"
                        android:lineSpacingExtra="@dimen/sp_6"
                        android:padding="@dimen/dp_8"
                        android:text="@string/pm_label_price_cashback" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_ticker_announcement_cropped" />

                </android.support.v7.widget.CardView>
            </FrameLayout>


            <include
                android:id="@+id/base_partial_tnc"
                layout="@layout/partial_tnc_power_merchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ticker_blue_container"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16" />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_footer_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shadow_top"
        android:padding="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <com.tokopedia.design.component.ButtonCompat
            style="@style/Button.Submit.Green.Full"
            android:id="@+id/button_activate_root"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/pm_label_button_activate" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>