<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_20"
    android:gravity="center_horizontal"
    >

    <com.tokopedia.design.component.TextViewCompat
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/pm_label_success_header"
        style="@style/TextView.TitleMedium.Bold"
        android:layout_marginBottom="@dimen/dp_10"
        />
    
    <ImageView
        android:id="@+id/img_btm_sheets"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:src="@drawable/bg_all_promo"
        android:layout_marginBottom="@dimen/dp_20"
        />

    <com.tokopedia.design.component.TextViewCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pm_label_success_desc"
        android:gravity="center"
        style="@style/TextView.Small"
        android:layout_marginBottom="@dimen/dp_20"/>

    <Button
        android:id="@+id/button_checknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Button.Submit.Green.Full"
        android:text="@string/pm_label_success_button"/>

</LinearLayout>