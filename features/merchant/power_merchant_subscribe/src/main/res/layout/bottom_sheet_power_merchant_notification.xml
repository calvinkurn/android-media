<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_lvl4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image"
        android:layout_width="@dimen/power_merchant_notification_image_size"
        android:layout_height="@dimen/power_merchant_notification_image_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textTitle"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyWeight="bold"
        app:typographyType="heading_4"
        tools:text="Selamat! Tokomu sudah menjadi Power Merchant"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textDescription"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:typographyType="body_3"
        tools:text="Tingkatkan penjualan tokomu dengan mengakses fitur-fitur andalan **Power Merchant!**"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnSecondaryCTA"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnPrimaryCTA"
        app:layout_constraintTop_toBottomOf="@id/textDescription"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:unifyButtonVariant="ghost"
        app:unifyButtonSize="medium"
        tools:text="Nanti Saja"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnPrimaryCTA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl3"
        app:layout_constraintTop_toBottomOf="@id/textDescription"
        app:layout_constraintLeft_toRightOf="@id/btnSecondaryCTA"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_goneMarginLeft="0dp"
        app:unifyButtonSize="medium"
        tools:text="Mulai" />
</androidx.constraintlayout.widget.ConstraintLayout>