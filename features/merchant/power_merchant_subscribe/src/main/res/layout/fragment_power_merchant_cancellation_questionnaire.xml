<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view_old.fragment.PowerMerchantCancellationQuestionnaireMultipleOptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_18"
            android:gravity="start"
            android:textColor="@color/Unify_N700_96"
            app:fontSize="title"
            app:weight="medium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_25" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <include layout="@layout/pm_cancellation_questionnaire_button_layout" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>