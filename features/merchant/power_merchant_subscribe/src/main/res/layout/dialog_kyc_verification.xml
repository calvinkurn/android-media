<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_chat_input">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_24"
        android:background="@drawable/bg_rounded_chat_input">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_kyc_header_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/pm_label_kyc_verification_header"
            android:textColor="@color/black"
            app:fontSize="subHeadline"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/dp_16"
            />


        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_kyc_static_desc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_kyc_header_1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="@string/pm_label_kyc_verification_desc_1"
            app:fontSize="title"
            app:textViewTheme="lightSecondary"
            />

        <Button
            android:id="@+id/btn_submit_kyc"
            style="@style/Button.Submit.Green.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_kyc_static_desc_1"
            android:layout_marginBottom="@dimen/dp_10"
            android:textStyle="bold"
            android:text="@string/pm_label_kyc_button_verification" />

        <Button
            android:id="@+id/btn_close_kyc"
            style="@style/Button.Submit.White.Border.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_submit_kyc"
            android:textStyle="bold"
            android:text="@string/pm_label_button_close" />

    </RelativeLayout>



</LinearLayout>