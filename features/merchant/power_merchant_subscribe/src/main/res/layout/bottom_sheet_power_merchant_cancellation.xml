<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textTitle"
            android:text="@string/pm_label_bottom_sheet_cancel_header"
            android:textColor="@color/light_N700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:typographyWeight="bold"
            app:typographyType="heading_2"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textDescription"
            android:text="@string/pm_label_bottom_sheet_cancel_desc"
            android:textColor="@color/light_N700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl5"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:typographyType="body_2"/>

        <ImageView
            android:id="@+id/imagePowerMerchant"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_width="@dimen/power_merchant_image_icon_medium"
            android:layout_height="@dimen/power_merchant_image_icon_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDescription"
            app:srcCompat="@drawable/ic_power_merchant"
            tools:src="@drawable/ic_power_merchant"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textPowerMerchant"
            android:text="@string/power_merchant_shop_benefit"
            android:textColor="@color/light_N700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/power_merchant_horizontal_spacing_small"
            android:layout_marginStart="@dimen/power_merchant_horizontal_spacing_small"
            app:layout_constraintLeft_toRightOf="@id/imagePowerMerchant"
            app:layout_constraintTop_toTopOf="@id/imagePowerMerchant"
            app:layout_constraintBottom_toBottomOf="@id/imagePowerMerchant"
            app:typographyWeight="bold"
            app:typographyType="body_2"/>

        <ImageView
            android:id="@+id/imageTopAds"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_width="@dimen/power_merchant_image_icon_medium"
            android:layout_height="@dimen/power_merchant_image_icon_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagePowerMerchant"
            app:srcCompat="@drawable/ic_topads_credit"
            tools:src="@drawable/ic_topads_credit"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textTopAds"
            android:text="@string/power_merchant_top_ads_benefit"
            android:textColor="@color/light_N700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/power_merchant_horizontal_spacing_small"
            android:layout_marginStart="@dimen/power_merchant_horizontal_spacing_small"
            app:layout_constraintLeft_toRightOf="@id/imageTopAds"
            app:layout_constraintTop_toTopOf="@id/imageTopAds"
            app:layout_constraintBottom_toBottomOf="@id/imageTopAds"
            app:typographyWeight="bold"
            app:typographyType="body_2"/>

        <ImageView
            android:id="@+id/imageCost"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_width="@dimen/power_merchant_image_icon_medium"
            android:layout_height="@dimen/power_merchant_image_icon_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageTopAds"
            app:srcCompat="@drawable/ic_cost_management"
            tools:src="@drawable/ic_cost_management"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textCost"
            android:text="@string/power_merchant_cost_benefit"
            android:textColor="@color/light_N700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/power_merchant_horizontal_spacing_small"
            android:layout_marginStart="@dimen/power_merchant_horizontal_spacing_small"
            app:layout_constraintLeft_toRightOf="@id/imageCost"
            app:layout_constraintTop_toTopOf="@id/imageCost"
            app:layout_constraintBottom_toBottomOf="@id/imageCost"
            app:typographyWeight="bold"
            app:typographyType="body_2"/>

        <ImageView
            android:id="@+id/imageBroadcastChat"
            android:layout_marginTop="@dimen/spacing_lvl4"
            android:layout_width="@dimen/power_merchant_image_icon_medium"
            android:layout_height="@dimen/power_merchant_image_icon_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageCost"
            app:srcCompat="@drawable/ic_pm_broadcast_chat"
            tools:src="@drawable/ic_pm_broadcast_chat"
            tools:ignore="ContentDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textBroadcastChat"
            android:text="@string/power_merchant_broadcast_benefit"
            android:textColor="@color/light_N700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/power_merchant_horizontal_spacing_small"
            android:layout_marginStart="@dimen/power_merchant_horizontal_spacing_small"
            app:layout_constraintLeft_toRightOf="@id/imageBroadcastChat"
            app:layout_constraintTop_toTopOf="@id/imageBroadcastChat"
            app:layout_constraintBottom_toBottomOf="@id/imageBroadcastChat"
            app:typographyWeight="bold"
            app:typographyType="body_2"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textBottomDescription"
            android:text="@string/pm_label_bs_cancel_desc_2"
            android:textColor="@color/light_N700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl4"
            app:layout_constraintTop_toBottomOf="@id/imageBroadcastChat"
            app:typographyType="body_2"/>

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/tickerWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl5"
            app:layout_constraintTop_toBottomOf="@id/textBottomDescription"
            app:closeButtonVisibility="gone"
            app:tickerType="warning"
            app:tickerShapeType="full"/>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnCancel"
            android:text="@string/pm_label_bottom_sheet_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl5"
            app:layout_constraintTop_toBottomOf="@id/tickerWarning"
            app:unifyButtonSize="medium"
            app:unifyButtonVariant="ghost"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnBack"
            android:text="@string/label_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/power_merchant_back_btn_margin"
            android:layout_marginBottom="@dimen/spacing_lvl5"
            app:layout_constraintTop_toBottomOf="@id/btnCancel"
            app:unifyButtonSize="medium" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>