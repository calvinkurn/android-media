<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/power_merchant_feature_card_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_lvl2">

        <ImageView
            android:id="@+id/imgPmFeatureItem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_lvl4"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPmFeatureItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_N700"
            android:textStyle="bold"
            app:typographyType="heading_5"
            tools:text="Pengiriman Bebas Ongkir" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvPmFeatureItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            app:typographyType="body_3"
            tools:text="Proses pengiriman pesanan dengan layanan SiCepat dan Anteraja. SK berlaku." />
    </LinearLayout>
</com.tokopedia.unifycomponents.CardUnify>