<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/labelProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seller_menu_product_list"
        android:textColor="@color/Unify_N700_96"
        app:typographyWeight="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelProduct"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="3 Produk" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/imageChevronRight"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@id/textProductCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/labelProduct"
        app:icon_name="CHEVRON_RIGHT"
        app:icon_color_light_enable="@color/Unify_N400" />

</androidx.constraintlayout.widget.ConstraintLayout>