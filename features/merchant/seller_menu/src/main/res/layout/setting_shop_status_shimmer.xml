<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/setting_status_loading_padding_top"
    android:paddingBottom="@dimen/setting_status_loading_padding_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmeringShopStatus"
        android:layout_width="0dp"
        android:layout_height="@dimen/setting_card_height"
        android:layout_marginHorizontal="16dp"
        app:loader_corner_radius="30dp"
        app:loader_type="line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>