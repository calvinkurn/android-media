<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/containerImageProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:padding="@dimen/dp_2"
                    android:background="@drawable/rounded_image_product_add"
                    android:elevation="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2">
                    <ImageView
                        android:id="@+id/imageTwo"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80" />

                    <ImageView
                        android:id="@+id/imageOverlayTwo"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="@drawable/rounded_image_product_add_overlay"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_2"
                    android:background="@drawable/rounded_image_product_add"
                    android:elevation="@dimen/dp_2"
                    android:layout_margin="@dimen/dp_2">

                    <ImageView
                        android:id="@+id/imageOne"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80" />

                    <ImageView
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="@drawable/rounded_image_product_add_overlay"/>

                    <TextView
                        android:id="@+id/textEditImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_grey_text_edit_image"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/dp_4"
                        android:layout_gravity="center"
                        android:text="@string/label_add"
                        android:elevation="@dimen/dp_2"
                        style="@style/TextView.Small" />
                </FrameLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_16">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewCategory"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_weight="1"
                    style="@style/TextView.Title.Bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewCatalog"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_weight="1"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/llCategoryCatalog"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit_product"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_weight="1"
                        style="@style/TextView.Small.Green"
                        android:text="@string/label_edit"
                        android:layout_marginLeft="@dimen/dp_8"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewNameProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_name"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewPriceProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_price"
            app:lv_sub_title="@string/product_subtitle_product_price"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewDescriptionProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_description_product"
            app:lv_sub_title="@string/product_subtitle_product_description"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewStockProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_stock"
            app:lv_content="@string/label_always_available"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />


        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewWeightLogisticProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_logistic_product"
            app:lv_sub_title="@string/product_subtitle_product_logistic"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewEtalaseProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_etalase"
            app:lv_sub_title="@string/product_subtitle_product_etalase"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewVariantProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_variant"
            app:lv_sub_title="@string/product_subtitle_product_variant"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <Button
            android:id="@+id/button_save"
            style="@style/Button.Submit.Green"
            android:layout_width="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/label_save" />

    </LinearLayout>

</ScrollView>