<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:src="@color/colorAccent"/>

                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:src="@color/colorAccent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_16">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_weight="1"
                    style="@style/TextView.Title.Bold"
                    android:text="Elektronik > Audio > Speaker" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_weight="1"
                    style="@style/TextView.Micro.BlackSecondary"
                    android:text="Anker Bluetooth Speaker" />

            </LinearLayout>
        </LinearLayout>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewNameProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_name"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewPriceProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_price"
            app:lv_sub_title="@string/product_subtitle_product_price"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewDescriptionProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_description_product"
            app:lv_sub_title="@string/product_subtitle_product_description"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewStockProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_stock"
            app:lv_content="@string/label_always_available"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />


        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewShippingProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_shipping_product"
            app:lv_sub_title="@string/product_subtitle_product_shipping"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewEtalaseProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_etalase"
            app:lv_sub_title="@string/product_subtitle_product_etalase"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelViewVariantProduct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_product_variant"
            app:lv_sub_title="@string/product_subtitle_product_variant"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/line_divider"/>

        <Button
            android:id="@+id/button_save"
            style="@style/Button.Submit.Green"
            android:layout_width="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/label_save" />

    </LinearLayout>

</ScrollView>