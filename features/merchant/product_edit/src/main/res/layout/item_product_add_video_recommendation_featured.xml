<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/image_video_width"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="@dimen/dp_8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageThumbnail"
            android:layout_width="@dimen/image_video_width"
            android:layout_height="@dimen/image_video_height" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageThumbnail"
            android:layout_margin="@dimen/dp_4">
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/rounded_grey_check" />
            <ImageView
                android:id="@+id/imageChosen"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:srcCompat="@drawable/ic_add_video_featured"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageThumbnail"
            android:layout_alignBottom="@+id/imageThumbnail"
            android:background="@drawable/rounded_grey"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:textColor="@color/white"
            android:layout_margin="@dimen/dp_4"
            style="@style/TextView.Micro"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/font_black_secondary_54"
        style="@style/TextView.Small.BlackSecondary"/>

    <TextView
        android:id="@+id/textChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:maxLines="1"
        style="@style/TextView.Micro.BlackDisabled"/>

</LinearLayout>