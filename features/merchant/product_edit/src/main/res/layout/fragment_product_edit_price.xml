<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextView.Small"
        android:text="@string/product_label_product_price"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <com.tokopedia.design.text.SpinnerCounterInputView
        android:id="@+id/spinnerCounterInputViewPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:spinner_decimal_entries="@array/product_currency_entries"
        app:spinner_decimal_max_length="@integer/product_max_counter_length"
        app:spinner_decimal_show_counter_button="false"
        app:spinner_decimal_values="@array/product_currency_values"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textRecommendationPrice"
        style="@style/TextView.Title"
        android:layout_width="match_parent"
        android:text="@string/product_label_recommendation_price"
        android:background="@drawable/rounded_yellow"
        android:padding="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextView.TitleBig.Bold"
        android:text="@string/product_label_additional_info"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <com.tokopedia.design.label.LabelView
        android:id="@+id/label_view_wholesale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_8"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:lv_content="@string/label_add"
        app:lv_content_color="@color/tkpd_main_green"
        app:lv_title="@string/product_label_wholesale_price"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        style="@style/HintTextInputLayout"
        android:layout_marginTop="@dimen/dp_16"
        android:hint="@string/product_label_minimum_buy"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12">

        <EditText
            style="@style/EditText"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:inputType="number" />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <com.tokopedia.design.text.TkpdHintTextInputLayout
            android:id="@+id/textInputLayoutMaksimumBuy"
            style="@style/HintTextInputLayout"
            android:hint="@string/product_label_maksimum_buy"
            android:layout_marginRight="@dimen/dp_minus4"
            android:layout_marginLeft="@dimen/dp_minus4"
            android:visibility="gone">

            <EditText
                style="@style/EditText"
                android:layout_width="match_parent"
                android:imeOptions="actionDone"
                android:inputType="number" />

        </com.tokopedia.design.text.TkpdHintTextInputLayout>

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Small.Green"
            android:text="@string/product_label_add_maksimum_buy"
            android:id="@+id/textAddMaksimumBuy"
            android:textStyle="bold"/>
    </FrameLayout>
</LinearLayout>