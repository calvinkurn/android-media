<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextView.Small"
        android:text="@string/product_label_product_price"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.tokopedia.design.text.SpinnerCounterInputView
            android:id="@+id/spinnerCounterInputViewPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:spinner_counter_max_length="@integer/product_max_counter_length"
            app:spinner_decimal_show_counter_button="false"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"/>

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_product"
            android:layout_marginRight="@dimen/dp_16"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textRecommendationPrice"
        style="@style/TextView.Title"
        android:layout_width="match_parent"
        android:text="@string/product_label_recommendation_price"
        android:background="@drawable/rounded_yellow"
        android:padding="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"/>

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextView.TitleBig.Bold"
        android:text="@string/product_label_additional_info"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16" />

    <com.tokopedia.design.label.LabelView
        android:id="@+id/labelViewWholesale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_8"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:lv_content="@string/label_add"
        app:lv_content_color="@color/tkpd_main_green"
        app:lv_title="@string/product_label_wholesale_price"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"/>

    <View
        android:id="@+id/dividerLabelViewWholesale"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

    <com.tokopedia.design.text.DecimalInputView
        android:id="@+id/editTextMinOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        app:decimal_max_length="@integer/product_max_counter_int_length"
        app:decimal_input_hint="@string/product_label_minimum_buy" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone">

        <com.tokopedia.design.text.DecimalInputView
            android:id="@+id/editTextMaxOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_minus4"
            android:layout_marginLeft="@dimen/dp_minus4"
            app:decimal_max_length="@integer/product_max_counter_int_length"
            app:decimal_input_hint="@string/product_label_maksimum_buy"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Small.Green"
            android:text="@string/product_label_add_maksimum_buy"
            android:id="@+id/textAddMaksimumBuy"
            android:textStyle="bold"/>
    </FrameLayout>
</LinearLayout>