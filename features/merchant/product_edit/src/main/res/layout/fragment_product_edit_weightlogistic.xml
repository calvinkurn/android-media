<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextView.Small"
        android:text="@string/product_label_product_weight"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <com.tokopedia.design.text.SpinnerCounterInputView
        android:id="@+id/spinnerCounterInputViewWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:spinner_decimal_max_length="@integer/product_max_counter_length"
        app:spinner_decimal_show_counter_button="false"
        app:spinner_decimal_spinner_width="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"/>

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextView.TitleBig.Bold"
        android:text="@string/product_label_additional_info"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <com.tokopedia.product.edit.price.LabelCheckbox
        android:id="@+id/labelCheckboxInsurance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_16"
        app:lc_title="@string/product_label_insurance" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

    <com.tokopedia.product.edit.price.LabelCheckbox
        android:id="@+id/labelCheckboxFreeReturn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_16"
        app:lc_title="@string/product_label_free_return" />

    <View
        android:id="@+id/lineDividerFreeReturn"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

    <com.tokopedia.product.edit.price.LabelSwitch
        android:id="@+id/labelSwitchPreOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_16"
        app:ls_title="@string/product_label_pre_order"
        app:ls_subtitle="@string/product_subtitle_product_pre_order"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

    <LinearLayout
        android:id="@+id/layoutProcessTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Small"
            android:text="@string/product_label_process_time"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>

        <com.tokopedia.design.text.SpinnerCounterInputView
            android:id="@+id/spinnerCounterInputViewProcessTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spinner_decimal_max_length="@integer/product_max_counter_length"
            app:spinner_decimal_show_counter_button="false"
            app:spinner_decimal_spinner_width="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"/>

    </LinearLayout>

</LinearLayout>