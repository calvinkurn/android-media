<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_add_video_ll_2_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_72"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16">

                        <ImageView
                            android:id="@+id/image_thumbnail"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_72"
                            tools:background="@color/grey_300"
                            android:scaleType="centerCrop"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/image_add_video_url_container_margin"
                    android:layout_marginStart="@dimen/image_add_video_url_container_margin"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_tag_recommendation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:text="@string/product_add_tag_video_recommendation"
                            android:layout_alignRight="@+id/image_thumbnail"
                            android:layout_alignBottom="@+id/image_thumbnail"
                            android:background="@drawable/rounded_grey"
                            android:paddingLeft="@dimen/dp_6"
                            android:paddingRight="@dimen/dp_6"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingBottom="@dimen/dp_2"
                            android:textColor="@color/white"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_2"/>

                        <TextView
                            android:id="@+id/text_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:gravity="center|start"
                            style="@style/TextView.Small.BlackSecondary"
                            tools:text="Beruang Teddy\n makanya harus makan nasi banyak2 " />

                        <TextView
                            android:id="@+id/text_channel"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_add_video_url_description_height"
                            android:ellipsize="end"
                            android:gravity="center|start"
                            android:lines="1"
                            style="@style/TextView.Micro.BlackDisabled"
                            tools:text="Review produk baru keluaran toko souvenir dan makan nasi" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_video_delete"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            app:srcCompat="@drawable/ic_delete" />

                </LinearLayout>
        </LinearLayout>

</LinearLayout>