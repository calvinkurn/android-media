<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/text_input_layout_description"
        style="@style/HintTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/product_label_product_description"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/product_max_character_description"
        android:layout_margin="@dimen/dp_16">

        <EditText
            android:id="@+id/edit_text_description"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:gravity="top"
            android:hint="@string/product_label_enter_product_description"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="@integer/product_max_character_description" />
    </com.tokopedia.design.text.TkpdHintTextInputLayout>

</LinearLayout>