<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/text_input_layout_name"
        style="@style/HintTextInputLayout"
        android:layout_marginTop="@dimen/dp_16"
        android:hint="@string/product_label_product_name"
        app:counterEnabled="true"
        app:counterMaxLength="@integer/product_max_character_name"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12">

        <EditText
            android:id="@+id/edit_text_name"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:hint="@string/product_hint_product_name"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:maxLength="@integer/product_max_character_name" />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

    <com.tokopedia.design.text.TkpdHintTextInputLayout
        android:id="@+id/product_label_feature_product"
        style="@style/HintTextInputLayout"
        android:layout_marginTop="@dimen/dp_24"
        android:hint="@string/product_label_product_brand"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        app:helper="@string/product_helper_product_brand">

        <EditText
            style="@style/EditText"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences" />

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

</LinearLayout>