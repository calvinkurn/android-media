<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="@string/product_add_title_video_recommendation"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"/>

        <TextView
            android:id="@+id/text_video_recommendation_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Small.Green"
            android:text="@string/product_add_title_video_recommendation_show_more"
            android:layout_margin="@dimen/dp_16" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_100"
        android:elevation="@dimen/dp_4"/>

</LinearLayout>