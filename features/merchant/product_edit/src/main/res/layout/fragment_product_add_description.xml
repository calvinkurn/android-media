<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginTop="@dimen/dp_16"
        style="@style/TextView.Small.BlackSecondary"
        android:text="@string/product_label_description_product"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16" />

    <EditText
        style="@style/GreenEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:hint="@string/product_label_description_product"
        android:imeOptions="actionDone" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginTop="@dimen/dp_16"
        style="@style/TextView.Small.BlackSecondary"
        android:text="@string/product_label_feature_product"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16" />

    <EditText
        style="@style/GreenEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:hint="@string/product_hint_feature_product"
        android:imeOptions="actionDone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16" >

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_weight="1"
            style="@style/TextView.Title.BlackSecondary"
            android:text="@string/product_label_condition_product" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SwitchGreen" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

    <com.tokopedia.design.label.LabelView
        android:id="@+id/label_view_video_product"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:lv_content="@string/label_add"
        app:lv_content_color="@color/tkpd_main_green"
        app:lv_title="@string/product_label_video_product"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

</LinearLayout>