<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GreenCheckbox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#42b549</item>
        <item name="android:textColorSecondary">#bfbfbf</item>
    </style>

    <style name="GreenEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:theme">@style/GreenEditTextLine</item>
    </style>

    <style name="GreenEditTextLine" parent="Theme.Design.Light"> <!-- stackoverflow.com/questions/35767158/ -->
        <item name="android:textColorHint">@color/font_black_secondary_54</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/tkpd_main_green</item>
        <item name="colorControlHighlight">@color/tkpd_main_green</item>
    </style>

</resources>