<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.seller_shop_flash_sale">

    <application>
        <activity
            android:name="com.tokopedia.shop.flash_sale.presentation.campaign_list.presentation.activity.CampaignListActivity"
            android:label="Flash Sale Toko"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/Theme.White"
            android:exported="false">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_sellerapp"
                    android:pathPattern="@string/path_seller_shop_flash_sale"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tokopedia.shop.flash_sale.presentation.creation.presentation.activity.CreationActivity"
            android:label="Flash Sale Toko"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/Theme.White"
            android:exported="false">
        </activity>
    </application>
</manifest>
