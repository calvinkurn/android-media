<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.seller_shop_flash_sale">

    <application>
        <activity
            android:name="com.tokopedia.shop.flashsale.presentation.detail.CampaignDetailActivity"
            android:exported="false" />
