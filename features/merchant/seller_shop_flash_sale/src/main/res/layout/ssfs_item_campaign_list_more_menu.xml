<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/unify_space_16"
    android:layout_marginEnd="@dimen/unify_space_16">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgMenu"
        android:layout_width="@dimen/unify_space_24"
        android:layout_height="@dimen/unify_space_24"
        android:layout_marginTop="@dimen/unify_space_16"
        android:layout_marginBottom="@dimen/unify_space_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_sfs_cancel" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgMenuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        android:layout_marginStart="@dimen/unify_space_12"
        app:layout_constraintBottom_toBottomOf="@+id/imgMenu"
        app:layout_constraintStart_toEndOf="@id/imgMenu"
        app:layout_constraintTop_toTopOf="@+id/imgMenu"
        tools:text="@string/sfs_available" />


</androidx.constraintlayout.widget.ConstraintLayout>

