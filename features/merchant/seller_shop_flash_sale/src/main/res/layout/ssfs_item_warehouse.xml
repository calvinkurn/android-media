<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
        android:id="@+id/checkboxItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typographyWarehouseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/checkboxItem"
        app:layout_constraintStart_toEndOf="@+id/checkboxItem"
        app:layout_constraintTop_toTopOf="@+id/checkboxItem"
        app:typographyType="paragraph_2"
        tool:text="Gudang garam" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typographyStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintBottom_toBottomOf="@+id/checkboxItem"
        app:layout_constraintStart_toEndOf="@+id/typographyWarehouseName"
        app:layout_constraintTop_toTopOf="@+id/checkboxItem"
        app:typographyType="paragraph_3"
        tool:text="Stok: 999" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkboxItem"
        app:layout_constraintVertical_bias="0.0"
        tool:layout_editor_absoluteX="152dp" />

</androidx.constraintlayout.widget.ConstraintLayout>