<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typographyDescDraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Klik salah satu draft untuk melanjutkan campaign atau hapus untuk membuat campaign baru."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDraft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/typographyDescDraft"
        tools:listitem="@layout/ssfs_item_draft"/>

</androidx.constraintlayout.widget.ConstraintLayout>