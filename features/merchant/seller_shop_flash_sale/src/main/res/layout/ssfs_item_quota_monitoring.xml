<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="12dp"
    app:card_background_color="@color/Unify_Background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_package_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="21dp"
            android:maxLines="2"
            app:layout_constraintEnd_toStartOf="@+id/tp_expire"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="paragraph_3"
            app:typographyWeight="reguler"
            tools:text="Keanggotaan PM PRO Ultimate Juli 2022" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_remaining_quota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tp_package_name"
            app:layout_constraintTop_toBottomOf="@+id/tp_package_name"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            tools:text="@string/ssfs_remaining_and_total_quota_value_placeholder" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tp_expire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tp_remaining_quota"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tp_package_name"
            app:typographyType="paragraph_3"
            app:typographyWeight="bold"
            tools:text="Tidak ada" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>