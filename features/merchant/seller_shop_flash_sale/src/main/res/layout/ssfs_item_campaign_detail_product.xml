<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_product"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:unify_image_corner_radius="8" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_product_highlightName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/teal_600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_product"
            app:layout_constraintTop_toTopOf="@+id/image_product"
            app:typographyType="paragraph_2"
            app:typographyWeight="reguler"
            tools:text="Product #1" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_product"
            app:layout_constraintTop_toBottomOf="@+id/tpg_product_highlightName"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="Hakuna matata" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_product_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/gr_700"
            app:layout_constraintStart_toStartOf="@+id/image_product"
            app:layout_constraintTop_toBottomOf="@+id/image_product"
            app:typographyType="paragraph_2"
            app:typographyWeight="reguler"
            tools:text="@string/campaign_detail_SKU_placeholder" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/separator_label"
            android:textColor="@color/grey_100"
            app:layout_constraintBottom_toBottomOf="@+id/tpg_product_sku"
            app:layout_constraintStart_toEndOf="@+id/tpg_product_sku"
            app:layout_constraintTop_toTopOf="@+id/tpg_product_sku"
            app:typographyType="paragraph_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_stock_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/campaign_detail_campaign_stock_label"
            android:textColor="@color/gr_700"
            app:layout_constraintBottom_toBottomOf="@+id/tpg_separator"
            app:layout_constraintStart_toEndOf="@+id/tpg_separator"
            app:layout_constraintTop_toTopOf="@+id/tpg_separator"
            app:typographyType="paragraph_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_product_campaign_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tpg_campaign_stock_label"
            app:layout_constraintStart_toEndOf="@+id/tpg_campaign_stock_label"
            app:layout_constraintTop_toTopOf="@+id/tpg_campaign_stock_label"
            app:typographyType="paragraph_2"
            app:typographyWeight="bold"
            tools:text="120" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_product_sold_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/campaign_detail_sold_label"
            android:textColor="@color/gr_700"
            app:layout_constraintBottom_toBottomOf="@+id/tpg_separator"
            app:layout_constraintStart_toEndOf="@+id/tpg_separator"
            app:layout_constraintTop_toTopOf="@+id/tpg_separator"
            app:typographyType="paragraph_2"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_product_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tpg_product_sold_label"
            app:layout_constraintStart_toEndOf="@+id/tpg_product_sold_label"
            app:layout_constraintTop_toTopOf="@+id/tpg_product_sold_label"
            app:typographyType="paragraph_2"
            app:typographyWeight="bold"
            tools:text="120" />

        <LinearLayout
            android:id="@+id/ll_group_view_count"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tpg_product_sku">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpg_view_count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dilihat"
                android:textColor="@color/gr_700"
                app:typographyType="paragraph_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpg_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:typographyType="paragraph_2"
                app:typographyWeight="bold"
                tools:text="232" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_group_campaign_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/ll_group_view_count"
            app:layout_constraintTop_toTopOf="@+id/ll_group_view_count">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpg_campaign_stock_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/campaign_detail_campaign_stock_label"
                android:textColor="@color/gr_700"
                app:typographyType="paragraph_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpg_campaign_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:typographyType="paragraph_2"
                app:typographyWeight="bold"
                tools:text="23" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_group_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/ll_group_campaign_stock"
            app:layout_constraintTop_toTopOf="@+id/ll_group_campaign_stock">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpg_remaining_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/campaign_detail_remaining_label"
                android:textColor="@color/gr_700"
                app:typographyType="paragraph_2"
                app:typographyWeight="reguler" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpg_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:typographyType="paragraph_2"
                app:typographyWeight="bold"
                tools:text="10" />

        </LinearLayout>

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/dividerUnify3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_group_view_count" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:text="@string/campaign_detail_campaign_price_label"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerUnify3"
            app:typographyType="display_3"
            app:typographyWeight="reguler" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_product_campaign_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tpg_campaign_price_label"
            app:layout_constraintTop_toBottomOf="@+id/tpg_campaign_price_label"
            app:typographyType="paragraph_2"
            app:typographyWeight="bold"
            tools:text="Rp4000.000" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_item_ongoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="ll_group_view_count, ll_group_campaign_stock, ll_group_remaining, tpg_product_sold_label, tpg_product_sold" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_campaign_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tpg_campaign_stock_label, tpg_product_campaign_stock" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify2>