<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_category_icon"
        android:layout_width="@dimen/layout_lvl4"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_lvl2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_view_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl1"
        android:ellipsize="end"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2" />

</LinearLayout>