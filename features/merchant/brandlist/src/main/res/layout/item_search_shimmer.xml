<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_shimmer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginBottom="@dimen/layout_lvl1"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/iv_brand_logo_shimmer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl1"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl2"
                android:layout_marginLeft="@dimen/layout_lvl2"
                android:layout_marginRight="@dimen/layout_lvl2"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/iv_brand_image_shimmer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_lvl7"
                android:layout_margin="@dimen/layout_lvl2"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_brand_logo_shimmer" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tv_brand_name_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl3"
        android:layout_marginRight="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/dp_8"
        android:lineSpacingExtra="6sp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_shimmer" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tv_brand_name_second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl4"
        android:layout_marginRight="@dimen/layout_lvl4"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:lineSpacingExtra="6sp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_brand_name_shimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>