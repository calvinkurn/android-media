<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_icon_toped_announce"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Oops, Brand tidak ditemukan"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#f531353b"
                android:lineSpacingExtra="4sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Coba kata kunci lain atau cek rekomendasi \nbrand dibawah."
                android:textSize="10sp"
                android:textColor="@color/charcoal_grey_68"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_check_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unifyButtonSize="small"
        android:text="Ganti Kata Kunci"/>

</LinearLayout>