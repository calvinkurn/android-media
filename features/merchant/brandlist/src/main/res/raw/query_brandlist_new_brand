query OfficialStoreBrandsRecommendation($userID: Int, $categoryIDs: String) {
    OfficialStoreBrandsRecommendation(userID: $userID, device: 4, widgetName: "NEW", categoryIDs: $categoryIDs) {
        totalShops
        shops {
          id
          name
          url
          logoUrl
          imageUrl
          additionalInformation
          exclusive_logo_url
        }
        header {
          title
          ctaText
          link
        }
    }
}