<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sah_status_bar_height"
        android:background="@android:color/transparent"
        android:elevation="@dimen/sah_status_bar_elevation" />

    <com.tokopedia.sellerhome.view.widget.toolbar.SellerHomeToolbar
        android:id="@+id/sahToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusBarBackground"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sah_dimen_4dp"
        android:background="@drawable/sah_shadow"
        android:layout_below="@id/sahToolbar"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/sahContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sahToolbar"
        android:layout_above="@+id/sahBottomNav"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sah_dimen_4dp"
        android:background="@drawable/sah_shadow"
        android:rotation="@integer/shadow_inverted_rotation"
        android:layout_above="@id/sahBottomNav"/>

    <com.tokopedia.design.component.BottomNavigation
        android:id="@+id/sahBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/sah_bottom_nav_selector"
        app:menu="@menu/sah_menu_bottom_navigation"
        app:theme="@style/NavigationMenuItemTextAppearance" />
</RelativeLayout>