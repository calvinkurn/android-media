<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sah_status_bar_height"
        android:background="@color/transparent"
        android:elevation="@dimen/sah_status_bar_elevation"/>

    <com.tokopedia.sellerhome.view.widget.toolbar.SellerHomeToolbar
        android:id="@+id/sahToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Neutral_N0"
        android:minHeight="?attr/actionBarSize" />

    <FrameLayout
        android:id="@+id/sahFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>