<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/centralized_promo_first_voucher_bottomsheet_item_padding_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/firstVoucherItemIcon"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/centralized_promo_first_voucher_bottomsheet_item_icon_margin"
        android:layout_marginStart="@dimen/centralized_promo_first_voucher_bottomsheet_item_icon_margin"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/firstVoucherItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/centralized_promo_first_voucher_bottomsheet_item_title_margin_start"
        android:maxLines="1"
        android:textColor="@color/Unify_N700"
        android:gravity="start"
        android:textAlignment="textStart"
        app:typographyType="heading_5"
        app:layout_constraintStart_toEndOf="@id/firstVoucherItemIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/firstVoucherItemDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:gravity="start"
        android:textAlignment="textStart"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_2"
        app:layout_constraintStart_toStartOf="@id/firstVoucherItemTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstVoucherItemTitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>