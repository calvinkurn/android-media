<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_sah_new_other_shop_title"
        android:layout_width="@dimen/sah_new_other_item_shop_shimmer_title_width"
        android:layout_height="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shimmer_sah_new_other_shop_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_sah_new_other_shop_desc"
        android:layout_width="@dimen/sah_new_other_item_shop_shimmer_desc_width"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/sah_new_other_item_shop_info_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_sah_new_other_shop_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>