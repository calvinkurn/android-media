<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sah_progress_layout_shimmering"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_card_title"
        android:layout_width="156dp"
        android:layout_height="16dp"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_score"
        android:layout_width="40dp"
        android:layout_height="16dp"
        app:corners="10"
        app:layout_constraintBottom_toBottomOf="@id/shimmering_shop_score_widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/shimmering_shop_score_widget" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_shop_score_widget"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:corners="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_card_title" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_first_line_description"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/layout_lvl4"
        app:corners="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_shop_score_widget" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_second_line_description"
        android:layout_width="136dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_first_line_description" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_see_details"
        android:layout_width="136dp"
        android:layout_height="18dp"
        android:layout_marginTop="12dp"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_second_line_description" />

</androidx.constraintlayout.widget.ConstraintLayout>