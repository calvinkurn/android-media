<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCentralizedPromoCreation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/partialSuccess"
        layout="@layout/centralized_promo_partial_creation_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCentralizedPromoCreation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sah_bg_gradient_promotion_card_widget"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:paddingStart="@dimen/centralized_promo_dimen_10dp"
        android:paddingLeft="@dimen/centralized_promo_dimen_10dp"
        android:paddingEnd="@dimen/centralized_promo_dimen_10dp"
        android:paddingRight="@dimen/centralized_promo_dimen_10dp"
        android:paddingBottom="@dimen/layout_lvl1"
        app:layout_constraintTop_toBottomOf="@id/partialSuccess"
        tools:targetApi="lollipop" />

    <include layout="@layout/centralized_promo_partial_creation_shimmering" />

</androidx.constraintlayout.widget.ConstraintLayout>