<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/sahContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sahBottomNav"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.tokopedia.design.component.BottomNavigation
        android:id="@+id/sahBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/sah_bottom_nav_selector"
        app:menu="@menu/sah_menu_bottom_navigation"
        app:theme="@style/NavigationMenuItemTextAppearance" />
</RelativeLayout>