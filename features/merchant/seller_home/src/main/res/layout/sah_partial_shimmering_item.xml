<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmering_info_seller_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:corners="30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_info_seller_title_first_line"
        android:layout_width="156dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        app:corners="10"
        app:layout_constraintStart_toEndOf="@+id/shimmering_info_seller_image"
        app:layout_constraintTop_toTopOf="@+id/shimmering_info_seller_image" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_info_seller_title_second_line"
        android:layout_width="190dp"
        android:layout_height="16dp"
        app:corners="10"
        app:layout_constraintBottom_toTopOf="@+id/shimmering_info_seller_description"
        app:layout_constraintStart_toStartOf="@+id/shimmering_info_seller_title_first_line"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_info_seller_title_first_line" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_info_seller_description"
        android:layout_width="119dp"
        android:layout_height="16dp"
        app:corners="10"
        app:layout_constraintBottom_toBottomOf="@+id/shimmering_info_seller_image"
        app:layout_constraintStart_toStartOf="@+id/shimmering_info_seller_title_first_line"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_info_seller_title_second_line" />

</androidx.constraintlayout.widget.ConstraintLayout>