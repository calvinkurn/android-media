<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="@dimen/layout_lvl1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvOnGoingPromoTitle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="160dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvOnGoingPromoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_lvl1"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_6"
            tools:text="Broadcast Chat" />

        <View
            android:id="@+id/headerDivider"
            android:layout_width="0dp"
            android:layout_height="@dimen/sah_dimen_1dp"
            android:background="@color/Neutral_N75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOnGoingPromoTitle" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvOnGoingPromoStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_lvl1"
            android:paddingLeft="@dimen/layout_lvl1"
            android:paddingTop="4dp"
            android:paddingEnd="@dimen/layout_lvl1"
            android:paddingRight="@dimen/layout_lvl1"
            android:textColor="@color/sah_description_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerDivider"
            app:typographyType="body_3"
            tools:text="On Going" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvOnGoingPromoCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_lvl1"
            android:paddingLeft="@dimen/layout_lvl1"
            android:paddingEnd="@dimen/layout_lvl1"
            android:paddingRight="@dimen/layout_lvl1"
            android:paddingBottom="4dp"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tvOnGoingPromoStatus"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvOnGoingPromoStatus"
            app:layout_constraintTop_toBottomOf="@id/tvOnGoingPromoStatus"
            app:typographyType="heading_1"
            tools:text="1" />

        <View
            android:id="@+id/footerDivider"
            android:layout_width="0dp"
            android:layout_height="@dimen/sah_dimen_1dp"
            android:background="@color/Neutral_N75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOnGoingPromoCount" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvSeePastPromotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_lvl1"
            android:paddingLeft="@dimen/layout_lvl1"
            android:paddingTop="@dimen/layout_lvl1"
            android:paddingEnd="@dimen/layout_lvl3"
            android:paddingRight="@dimen/layout_lvl3"
            android:paddingBottom="@dimen/layout_lvl1"
            android:textColor="@color/sah_description_desc"
            app:layout_constraintEnd_toStartOf="@id/ivCaret"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivCaret"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/footerDivider"
            app:typographyType="body_3"
            tools:text="See past promotion" />

        <ImageView
            android:id="@+id/ivCaret"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:paddingEnd="@dimen/layout_lvl1"
            android:paddingRight="@dimen/layout_lvl1"
            app:layout_constraintBottom_toBottomOf="@id/tvSeePastPromotion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvSeePastPromotion"
            app:srcCompat="@drawable/ic_arrow_right_grey" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>