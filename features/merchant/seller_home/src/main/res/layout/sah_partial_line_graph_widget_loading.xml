<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerLineGraphWidget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/sahLineGraphShimmer0"
        android:layout_width="@dimen/sah_dimen_120dp"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/sahLineGraphShimmer1"
        android:layout_width="@dimen/sah_dimen_150dp"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/sah_dimen_20dp"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sahLineGraphShimmer0" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/sahLineGraphShimmer2"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/sah_medium_widget_height"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:corners="10"
        app:layout_constraintBottom_toTopOf="@+id/sahLineGraphShimmer3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sahLineGraphShimmer1" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/sahLineGraphShimmer3"
        android:layout_width="@dimen/sah_dimen_150dp"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        app:corners="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>