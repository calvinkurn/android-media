<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivSahRamadhanBg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:unify_image_corner_radius="0"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_sah_ramadhan_home"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:unify_image_corner_radius="0"
        app:layout_constraintTop_toTopOf="@id/ivSahRamadhanBg"
        app:layout_constraintBottom_toBottomOf="@id/ivSahRamadhanBg"
        app:srcCompat="@drawable/ic_sah_ramadhan_gradient_left"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:unify_image_corner_radius="0"
        app:layout_constraintTop_toTopOf="@id/ivSahRamadhanBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivSahRamadhanBg"
        app:srcCompat="@drawable/ic_sah_ramadhan_gradient_right"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:unify_image_corner_radius="0"
        app:layout_constraintTop_toTopOf="@id/ivSahRamadhanBg"
        app:srcCompat="@drawable/ic_sah_ramadhan_pattern"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:unify_image_corner_radius="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sah_ramadhan_ornament"/>

    <RelativeLayout
        android:id="@+id/relTicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.ticker.Ticker
            android:id="@+id/tickerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tickerShapeType="full"
            app:tickerType="announcement" />
    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relTicker">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/sahNestedScrollView"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="@dimen/layout_lvl0"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent">

                    <com.tokopedia.globalerror.GlobalError
                        android:id="@+id/sahGlobalError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                    <com.tokopedia.empty_state.EmptyStateUnify
                        android:id="@+id/empty_state_seller_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                    <com.tokopedia.unifycomponents.LoaderUnify
                        android:id="@+id/progressBarSah"
                        android:layout_width="@dimen/layout_lvl4"
                        android:layout_height="@dimen/layout_lvl4"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:overScrollMode="never"
                android:paddingStart="@dimen/spacing_lvl2"
                android:paddingLeft="@dimen/spacing_lvl2"
                android:paddingEnd="@dimen/spacing_lvl2"
                android:paddingRight="@dimen/spacing_lvl2"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
