<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCentralizedPromoCreationSuccess"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/layout_lvl2"
    android:paddingBottom="@dimen/layout_lvl1">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCentralizedPromoCreationTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:maxLines="1"
        android:text="@string/sh_lbl_create_promotion"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPromoCreationDescription"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/centralized_promo_dimen_4dp"
        android:text="@string/sh_lbl_create_promotion_desc"
        android:textColor="@color/sah_description_desc"
        app:layout_constraintEnd_toEndOf="@id/tvCentralizedPromoCreationTitle"
        app:layout_constraintLeft_toLeftOf="@id/tvCentralizedPromoCreationTitle"
        app:layout_constraintRight_toRightOf="@id/tvCentralizedPromoCreationTitle"
        app:layout_constraintStart_toStartOf="@id/tvCentralizedPromoCreationTitle"
        app:layout_constraintTop_toBottomOf="@id/tvCentralizedPromoCreationTitle"
        app:typographyType="body_2" />

</androidx.constraintlayout.widget.ConstraintLayout>
