<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCentralizedPromoRecommendationSuccess"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/layout_lvl2"
    android:visibility="gone">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCentralizedPromoPostTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:maxLines="1"
        android:text="@string/sh_lbl_create_promotion"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPromoRecommendationDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/sh_lbl_create_promotion_desc"
        android:textColor="@color/sah_description_desc"
        app:layout_constraintEnd_toEndOf="@id/tvCentralizedPromoPostTitle"
        app:layout_constraintLeft_toLeftOf="@id/tvCentralizedPromoPostTitle"
        app:layout_constraintRight_toRightOf="@id/tvCentralizedPromoPostTitle"
        app:layout_constraintStart_toStartOf="@id/tvCentralizedPromoPostTitle"
        app:layout_constraintTop_toBottomOf="@id/tvCentralizedPromoPostTitle"
        app:typographyType="body_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCentralizedPromoRecommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sah_bg_gradient_promotion_card_widget"
        android:clipToPadding="false"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/layout_lvl2"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/tvPromoRecommendationDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
