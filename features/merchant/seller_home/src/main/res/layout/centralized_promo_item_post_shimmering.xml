<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_lvl1"
    android:background="@color/transparent">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/ivPromotionPostShimmer"
        android:layout_width="@dimen/sah_dimen_50dp"
        android:layout_height="@dimen/sah_dimen_50dp"
        app:corners="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tvPromotionPostTitleShimmer"
        android:layout_width="300dp"
        android:layout_height="@dimen/sah_dimen_18dp"
        android:layout_marginStart="@dimen/sah_dimen_12dp"
        android:layout_marginLeft="@dimen/sah_dimen_12dp"
        app:corners="10"
        app:layout_constraintLeft_toRightOf="@id/ivPromotionPostShimmer"
        app:layout_constraintStart_toEndOf="@id/ivPromotionPostShimmer"
        app:layout_constraintTop_toTopOf="@id/ivPromotionPostShimmer" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/tvPromotionPostTitleDescriptionShimmer"
        android:layout_width="300dp"
        android:layout_height="@dimen/sah_dimen_12dp"
        android:layout_marginTop="@dimen/sah_dimen_10dp"
        app:corners="10"
        app:layout_constraintLeft_toLeftOf="@id/tvPromotionPostTitleShimmer"
        app:layout_constraintStart_toStartOf="@id/tvPromotionPostTitleShimmer"
        app:layout_constraintTop_toBottomOf="@id/tvPromotionPostTitleShimmer" />

</androidx.constraintlayout.widget.ConstraintLayout>