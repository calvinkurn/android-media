<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCentralizedPromoOnGoingPromoError"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_lvl2"
    android:visibility="gone">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCentralizedPromoOnGoingTitleError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/spacing_lvl2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Iklan dan Promosimu" />

    <com.tokopedia.unifycomponents.LocalLoad
        android:id="@+id/localLoadOnGoingPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="@dimen/sah_dimen_12dp"
        app:layout_constraintTop_toBottomOf="@id/tvCentralizedPromoOnGoingTitleError" />

</androidx.constraintlayout.widget.ConstraintLayout>