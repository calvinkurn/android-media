<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_lvl4"
    android:background="?selectableItemBackground"
    tools:layout_height="@dimen/sah_new_other_shop_secondary_info_height">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_sah_new_other_shop_free_shipping"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl3"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/avatars"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_sah_new_other_free_shipping"
        android:layout_width="@dimen/sah_new_other_item_shop_shimmer_width"
        android:layout_height="@dimen/layout_lvl2"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:loader_corner_radius="20dp"
        app:loader_type="rect"/>

    <include
        layout="@layout/partial_item_sah_new_other_failed"
        android:id="@+id/error_state_sah_new_other_shop_free_shipping"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>