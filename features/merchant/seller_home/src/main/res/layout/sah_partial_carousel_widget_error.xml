<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_lvl8"
        android:src="@drawable/unify_globalerrors_connection"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvBannerErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:textSize="@dimen/fontSize_lvl3"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        android:text="@string/sah_line_graph_error_message" />

</LinearLayout>