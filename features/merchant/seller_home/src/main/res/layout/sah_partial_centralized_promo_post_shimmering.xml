<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCentralizedPromoPostListShimmering"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sah_large_widget_height"
    android:background="@color/transparent"
    android:padding="@dimen/layout_lvl2">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_card_title"
        android:layout_width="@dimen/sah_dimen_156dp"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl1"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmering_first_info_seller_item"
        layout="@layout/sah_item_centralized_promo_post_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sah_dimen_26dp"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_card_title" />

    <include
        android:id="@+id/shimmering_second_info_seller_item"
        layout="@layout/sah_item_centralized_promo_post_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_first_info_seller_item" />

    <include
        android:id="@+id/shimmering_third_info_seller_item"
        layout="@layout/sah_item_centralized_promo_post_shimmering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_second_info_seller_item" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/sah_dimen_156dp"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/sah_dimen_28dp"
        app:corners="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_third_info_seller_item" />

</androidx.constraintlayout.widget.ConstraintLayout>