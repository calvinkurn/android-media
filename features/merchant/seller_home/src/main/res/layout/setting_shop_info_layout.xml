<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/shopInfoView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_shop_info_height"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"/>
    <View
        android:id="@+id/outerCircle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintStart_toStartOf="@id/settingShopGuidelineLeft"
        app:layout_constraintBottom_toBottomOf="@id/shopInfoView"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/setting_image_circular"/>

    <RelativeLayout
        android:id="@+id/innerCircle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/setting_shop_image_border_margin"
        android:background="@drawable/setting_image_circular_border_inner"
        app:layout_constraintTop_toTopOf="@id/outerCircle"
        app:layout_constraintBottom_toBottomOf="@id/outerCircle"
        app:layout_constraintStart_toStartOf="@id/outerCircle"
        app:layout_constraintEnd_toEndOf="@id/outerCircle">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/shopImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:unify_image_type="circle"/>

    </RelativeLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/setting_black_text"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/shopInfoView"
        app:layout_constraintBottom_toTopOf="@id/shopBadges"
        app:layout_constraintStart_toStartOf="@id/settingShopGuidelineInfo"
        app:typographyType="heading_2"
        app:typographyWeight="bold"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/shopBadges"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/shopName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/settingShopGuidelineInfo"
        app:layout_constraintEnd_toStartOf="@id/shopFollowing"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopFollowing"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/setting_grey_text"
        android:gravity="center_vertical"
        app:typographyType="small"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toTopOf="@id/shopBadges"
        app:layout_constraintBottom_toBottomOf="@id/innerCircle"
        app:layout_constraintStart_toEndOf="@id/shopBadges"/>

    <ImageView
        android:id="@+id/settingShopNext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_sah_arrow_right"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/settingShopGuidelineRight"
        app:layout_constraintTop_toTopOf="@id/shopInfoView"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settingShopGuidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settingShopGuidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settingShopGuidelineInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/outerCircle"
        app:layout_constraintEnd_toEndOf="@id/settingShopGuidelineRight"
        app:layout_constraintGuide_percent="0.3"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmerShopName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="@id/shopInfoView"
        app:layout_constraintBottom_toTopOf="@id/shopBadges"
        app:layout_constraintStart_toStartOf="@id/settingShopGuidelineInfo"
        android:visibility="gone"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmerFollowing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toTopOf="@id/shopBadges"
        app:layout_constraintBottom_toBottomOf="@id/innerCircle"
        app:layout_constraintStart_toStartOf="@id/settingShopGuidelineInfo"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>