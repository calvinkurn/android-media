<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/spacing_lvl4"
    android:background="?selectableItemBackground"
    tools:layout_height="@dimen/sah_new_other_shop_secondary_info_height">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_sah_new_other_shop_followers_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_sah_new_other_shop_followers_title, tv_sah_new_other_shop_followers_desc"
        tools:visibility="gone"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sah_new_other_shop_followers_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_follower"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_sah_new_other_shop_followers_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_3"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sah_new_other_shop_followers_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sah_new_other_item_shop_info_margin"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sah_new_other_shop_followers_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="heading_5"
        tools:text="18"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_sah_new_other_shop_followers_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="shimmer_sah_new_other_shop_followers_title, shimmer_sah_new_other_shop_followers_desc"
        tools:visibility="gone"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_sah_new_other_shop_followers_title"
        android:layout_width="@dimen/sah_new_other_item_shop_follower_shimmer_width"
        android:layout_height="@dimen/layout_lvl2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shimmer_sah_new_other_shop_followers_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:corners="@integer/setting_shimmer_radius"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_sah_new_other_shop_followers_desc"
        android:layout_width="@dimen/sah_new_other_item_shop_follower_shimmer_width"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/sah_new_other_item_shop_info_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_sah_new_other_shop_followers_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:corners="@integer/setting_shimmer_radius"/>

    <include
        layout="@layout/partial_item_sah_new_other_failed"
        android:id="@+id/error_state_sah_new_other_shop_followers"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>