<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPromoBroadcastChat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clipToPadding="false"
        app:card_type="shadow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvRecommendedPromoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:gravity="start"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/clIcon"
                app:typographyType="heading_5"
                tools:text="Broadcast Chat" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/vBackground"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    android:padding="12dp"
                    android:background="@drawable/bg_icon_promo"
                    android:contentDescription="@string/centralized_promo_content_desc_image_recommended_promo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.tokopedia.unifycomponents.ImageUnify
                    android:id="@+id/ivRecommendedPromo"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/centralized_promo_content_desc_image_recommended_promo"
                    app:layout_constraintEnd_toEndOf="@id/vBackground"
                    app:layout_constraintStart_toStartOf="@id/vBackground"
                    app:layout_constraintTop_toTopOf="@id/vBackground"
                    app:layout_constraintBottom_toBottomOf="@id/vBackground"/>

                <com.tokopedia.unifycomponents.Label
                    android:id="@+id/tvBadgeNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_marginHorizontal="6dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:labelType="general_dark_red"
                    android:textAllCaps="true"
                    app:labelTitle="@string/text_badge_new"
                    app:layout_constraintTop_toTopOf="@id/ivRecommendedPromo"
                    app:layout_constraintStart_toStartOf="@id/vBackground"
                    app:layout_constraintEnd_toEndOf="@id/vBackground" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvRecommendedPromoDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clIcon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:lineHeight="18sp"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>



</androidx.constraintlayout.widget.ConstraintLayout>