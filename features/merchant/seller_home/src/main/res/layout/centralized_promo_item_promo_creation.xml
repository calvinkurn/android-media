<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPromoBroadcastChat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clipToPadding="false"
        app:card_type="shadow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvRecommendedPromoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:gravity="start"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivRecommendedPromo"
                app:typographyType="heading_5"
                tools:text="Broadcast Chat" />


            <View
                android:id="@+id/vBackground"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:adjustViewBounds="true"
                android:padding="12dp"
                android:background="@drawable/bg_icon_promo"
                android:contentDescription="@string/centralized_promo_content_desc_image_recommended_promo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/ivRecommendedPromo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/centralized_promo_content_desc_image_recommended_promo"
                app:layout_constraintEnd_toEndOf="@id/vBackground"
                app:layout_constraintStart_toStartOf="@id/vBackground"
                app:layout_constraintTop_toTopOf="@id/vBackground"
                app:layout_constraintBottom_toBottomOf="@id/vBackground"/>


            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvBadgeNew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:typographyType="small"
                android:background="@drawable/bg_badge_new"
                android:textColor="@color/WhiteText"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp"
                android:layout_marginTop="35dp"
                android:layout_marginHorizontal="6dp"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible"
                android:textAllCaps="true"
                app:layout_constraintTop_toTopOf="@id/ivRecommendedPromo"
                app:layout_constraintStart_toStartOf="@id/vBackground"
                app:layout_constraintEnd_toEndOf="@id/vBackground"
                android:text="@string/text_badge_new"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="top"
                app:constraint_referenced_ids="vBackground"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvRecommendedPromoDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/Unify_N700_68"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:lineHeight="18sp"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli Iklankan produkmu untuk menjangkau lebih banyak pembeli" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>



</androidx.constraintlayout.widget.ConstraintLayout>