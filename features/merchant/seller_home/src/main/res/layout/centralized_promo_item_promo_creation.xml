<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPromoBroadcastChat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/layout_lvl1">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/centralized_promo_promo_creation_card_height"
        android:layout_marginStart="@dimen/centralized_promo_promo_creation_card_horizontal_margin"
        android:layout_marginLeft="@dimen/centralized_promo_promo_creation_card_horizontal_margin"
        android:layout_marginTop="@dimen/centralized_promo_promo_creation_card_top_margin"
        android:layout_marginEnd="@dimen/centralized_promo_promo_creation_card_horizontal_margin"
        android:layout_marginRight="@dimen/centralized_promo_promo_creation_card_horizontal_margin"
        app:cardCornerRadius="@dimen/layout_lvl1"
        app:cardElevation="@dimen/centralized_promo_dimen_4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_lvl2">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvRecommendedPromoTitle"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl3"
                android:textAlignment="center"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_5"
                tools:text="Broadcast Chat" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvRecommendedPromoDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/centralized_promo_dimen_4dp"
                android:textAlignment="center"
                android:textColor="@color/sah_description_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRecommendedPromoTitle"
                app:typographyType="small"
                app:typographyWeight="reguler"
                tools:text="Increase conversion and new buyers through review given" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tvRecommendedPromoExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/centralized_promo_dimen_4dp"
                android:textAlignment="center"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRecommendedPromoDescription"
                app:layout_constraintVertical_bias="1"
                app:typographyType="small"
                app:typographyWeight="bold"
                tools:text="100 Kuota Gratis" />

            <View
                android:id="@+id/icRecommendedPromoExtra"
                android:layout_width="@dimen/centralized_promo_promo_creation_extra_icon_size"
                android:layout_height="@dimen/centralized_promo_promo_creation_extra_icon_size"
                android:layout_marginStart="@dimen/centralized_promo_dimen_4dp"
                android:layout_marginLeft="@dimen/centralized_promo_dimen_4dp"
                android:background="@drawable/sh_bg_small_green_circle"
                app:layout_constraintBottom_toBottomOf="@id/tvRecommendedPromoExtra"
                app:layout_constraintLeft_toRightOf="@id/tvRecommendedPromoExtra"
                app:layout_constraintStart_toEndOf="@id/tvRecommendedPromoExtra"
                app:layout_constraintTop_toTopOf="@id/tvRecommendedPromoExtra" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPromotionIcon"
        android:layout_width="@dimen/centralized_promo_promo_creation_card_icon_size"
        android:layout_height="@dimen/centralized_promo_promo_creation_card_icon_size"
        app:cardCornerRadius="@dimen/layout_lvl2"
        app:cardElevation="@dimen/centralized_promo_promo_creation_icon_card_elevation"
        app:layout_constraintBottom_toTopOf="@id/cardContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardContent">

        <ImageView
            android:id="@+id/ivRecommendedPromo"
            android:layout_width="@dimen/centralized_promo_promo_creation_icon_size"
            android:layout_height="@dimen/centralized_promo_promo_creation_icon_size"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/sh_ic_top_ads_color" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>