<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/layout_sah_new_other_shop_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_sah_new_other_shop_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iv_sah_new_other_shop_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/sah_new_other_shop_avatar_border"
            app:unify_image_type="circle"
            tools:src="@tools:sample/avatars"/>
    </RelativeLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sah_new_other_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/Unify_NN0"
        android:ellipsize="end"
        android:lines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="@id/layout_sah_new_other_shop_avatar"
        app:layout_constraintStart_toEndOf="@id/layout_sah_new_other_shop_avatar"
        app:layout_constraintEnd_toStartOf="@id/iv_sah_new_other_shop_name"
        app:layout_constraintBottom_toBottomOf="@id/layout_sah_new_other_shop_avatar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:typographyType="heading_4"
        tools:text="Rockerpowershop"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/iv_sah_new_other_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toEndOf="@id/tv_sah_new_other_shop_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_sah_new_other_shop_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_sah_new_other_shop_name"
        app:icon_name="CHEVRON_RIGHT"
        app:icon_color_light_enable="@color/Unify_NN0"/>

</androidx.constraintlayout.widget.ConstraintLayout>