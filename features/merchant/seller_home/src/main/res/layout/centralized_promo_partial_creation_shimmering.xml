<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCentralizedPromoCreationShimmering"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/layout_lvl2">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/tvCentralizedPromoCreationTitleShimmer"
        android:layout_width="@dimen/centralized_promo_text_shimmer_width_200dp"
        android:layout_height="@dimen/centralized_promo_text_shimmer_height_18dp"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/centralized_promo_dimen_4dp"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:loader_corner_radius="5dp"
        app:loader_type="rect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/recommendedOne"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/centralized_promo_image_shimmer_height_150dp"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toStartOf="@id/recommendedTwo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recommendedTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCentralizedPromoCreationTitleShimmer" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/recommendedTwo"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/centralized_promo_image_shimmer_height_150dp"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/recommendedOne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/recommendedOne"
        app:layout_constraintTop_toBottomOf="@id/tvCentralizedPromoCreationTitleShimmer" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/recommendedThree"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/centralized_promo_image_shimmer_height_150dp"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toStartOf="@id/recommendedFour"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recommendedFour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommendedOne" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/recommendedFour"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/centralized_promo_image_shimmer_height_150dp"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/recommendedThree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/recommendedThree"
        app:layout_constraintTop_toBottomOf="@id/recommendedTwo" />

</androidx.constraintlayout.widget.ConstraintLayout>
