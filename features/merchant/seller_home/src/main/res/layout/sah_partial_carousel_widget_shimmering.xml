<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/fontSize_lvl3"
        app:corners="10"
        app:width_weight="0.4" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/shimmering_banner"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl8"
        android:layout_marginTop="6dp"
        app:height_weight="0.5"
        app:width_weight="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmering_title"
        app:corners="20"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_load_more"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/shimmering_banner"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/fontSize_lvl3"
        app:corners="10" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_dots"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/shimmering_banner"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/fontSize_lvl3"
        app:corners="10" />

</androidx.constraintlayout.widget.ConstraintLayout>