<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sah_list_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sah_large_widget_height"
    android:padding="@dimen/layout_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_card_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/spacing_lvl2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Info Seller" />

    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:background="@android:color/transparent"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_card_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_card_title"
        app:layout_constraintTop_toTopOf="@+id/tv_card_title"
        app:srcCompat="@drawable/ic_info"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:clipToPadding="true"
        android:nestedScrollingEnabled="false"
        app:layout_constraintBottom_toTopOf="@+id/tv_see_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_card_title"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="3"
        tools:listitem="@layout/sah_item_post"
        tools:targetApi="lollipop" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_see_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:text="@string/sah_more"
        android:textColor="@color/Green_G500"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_see_details"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

    <ImageView
        android:id="@+id/iv_see_details"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_see_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_see_details"
        app:srcCompat="@drawable/ic_arrow_right_default" />

</androidx.constraintlayout.widget.ConstraintLayout>