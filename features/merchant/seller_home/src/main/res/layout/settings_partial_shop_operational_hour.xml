<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/layout_lvl1"
    android:paddingBottom="@dimen/spacing_lvl3">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textShopStatus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/settings_shop_status_label"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guidelineLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/labelShopStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        app:labelType="general_light_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textShopStatus"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Buka"/>

    <ImageView
        android:id="@+id/imageOperationalHour"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textOperationalHour"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sah_clock"
        android:contentDescription="@string/sah_content_desc_image_operational_hour" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textOperationalHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/guidelineRight"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="07.00 - 18.00 WIB" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_sah_other_operational_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="icon_sah_other_operational_failed, tv_sah_other_operational_failed"
        tools:visibility="gone"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_sah_other_operational_failed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="gone"
        app:icon_name="RELOAD"
        app:layout_constraintEnd_toStartOf="@id/tv_sah_other_operational_failed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sah_other_operational_failed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="@string/setting_other_failed_to_load"
        android:textColor="@color/Unify_N700_96"
        android:visibility="gone"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_sah_other_shop_operational"
        android:layout_width="@dimen/setting_zero_dp"
        android:layout_height="@dimen/setting_zero_dp"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:corners="@integer/setting_shimmer_radius"
        app:layout_constraintWidth_percent="0.38"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guidelineRight"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />
</androidx.constraintlayout.widget.ConstraintLayout>