<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/shopInfoView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_shop_error_background_height"
        android:layout_marginTop="@dimen/setting_header_height"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"/>

    <com.tokopedia.unifycomponents.LocalLoad
        android:id="@+id/settingLocalLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/shopInfoView"
        app:layout_constraintStart_toStartOf="@id/shopInfoView"
        app:layout_constraintEnd_toEndOf="@id/shopInfoView"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_divider_thick"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/shopInfoView"/>

</androidx.constraintlayout.widget.ConstraintLayout>