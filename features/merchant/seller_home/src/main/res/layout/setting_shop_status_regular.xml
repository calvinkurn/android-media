<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/setting_status_padding_top"
    android:paddingBottom="@dimen/setting_status_padding_bottom"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.95"
        app:card_type="border">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_card_height"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/regular_merchant"
                android:gravity="center_vertical"
                android:textColor="@color/default_black_text"
                app:typographyType="heading_5"
                app:typographyWeight="bold"
                app:layout_constraintStart_toStartOf="@id/leftGuideline"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/rightRectangle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:layout_constraintWidth_percent="0.3"
                app:srcCompat="@drawable/setting_shop_regular_rectangle"
                app:layout_constraintRight_toRightOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/triangle"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/setting_triangle"
                app:layout_constraintStart_toStartOf="@id/rightRectangle"/>

            <View
                android:id="@+id/badgeBorder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.06"
                app:layout_constraintStart_toStartOf="@id/triangle"
                app:layout_constraintEnd_toEndOf="@id/triangle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@drawable/setting_image_circular"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/setting_shop_badge_border_margin"
                app:layout_constraintTop_toTopOf="@id/badgeBorder"
                app:layout_constraintBottom_toBottomOf="@id/badgeBorder"
                app:layout_constraintStart_toStartOf="@id/badgeBorder"
                app:layout_constraintEnd_toEndOf="@id/badgeBorder"
                app:srcCompat="@drawable/ic_power_merchant"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/regularMerchantStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/setting_verifikasi"
                android:textColor="@color/setting_green"
                app:typographyType="body_2"
                app:typographyWeight="bold"
                app:layout_constraintStart_toEndOf="@id/triangle"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/leftGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>
</androidx.constraintlayout.widget.ConstraintLayout>
