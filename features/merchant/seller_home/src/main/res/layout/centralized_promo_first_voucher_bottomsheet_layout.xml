<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/centralized_promo_first_voucher_bottomsheet_margin_top"
    android:paddingBottom="@dimen/centralized_promo_first_voucher_bottomsheet_padding_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/firstVoucherBottomSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/black"
        android:text="@string/centralized_promo_bottomsheet_title"
        app:typographyType="heading_2"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/firstVoucherBottomSheetDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/default_black_text"
        android:text="@string/centralized_promo_bottomsheet_detail"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/firstVoucherBottomSheetTitle"
        app:typographyType="body_2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/firstVoucherRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/centralized_promo_first_voucher_bottomsheet_recyclerview_margin_top"
        app:layout_constraintTop_toBottomOf="@id/firstVoucherBottomSheetDetail"/>

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/firstVoucherTicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tickerShapeType="loose"
        app:tickerType="information"
        app:descriptionText="@string/centralized_promo_bottomsheet_free_delivery_info"
        app:closeButtonVisibility="gone"
        app:layout_constraintTop_toBottomOf="@id/firstVoucherRecyclerView"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/firstVoucherButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:text="@string/centralized_promo_bottomsheet_next"
        app:unifyButtonVariant="filled"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        app:layout_constraintTop_toBottomOf="@id/firstVoucherTicker"/>

</androidx.constraintlayout.widget.ConstraintLayout>