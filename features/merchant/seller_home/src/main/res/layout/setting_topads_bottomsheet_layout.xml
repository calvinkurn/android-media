<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/setting_topads_bottomsheet_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/topAdsBottomSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_topads_status_active"
        android:maxLines="2"
        app:typographyType="heading_2"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/topAdsBottomSheetDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_topads_bottomsheet_padding"
        android:maxLines="3"
        android:text="@string/setting_topads_description_active"
        android:textSize="@dimen/top_ads_description_size"
        app:layout_constraintTop_toBottomOf="@id/topAdsBottomSheetTitle"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/topAdsNextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_topads_button_margin"
        android:text="@string/setting_topads_next"
        android:textAllCaps="false"
        app:unifyButtonVariant="filled"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:layout_constraintTop_toBottomOf="@id/topAdsBottomSheetDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>