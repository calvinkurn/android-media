<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sah_other_status_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_header_height_extra"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/setting_regular_header"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sah_other_status_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.117"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintBottom_toBottomOf="@id/iv_sah_other_status_header"
        app:layout_constraintStart_toStartOf="@id/iv_sah_other_status_header"
        app:layout_constraintEnd_toEndOf="@id/iv_sah_other_status_header"
        tools:src="@drawable/ic_pm_icon_header"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/otherMenuScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <View
                android:id="@+id/bg_white_other_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_header_height_extra"
                android:layout_marginTop="@dimen/setting_header_height"
                android:background="@color/Unify_N0"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_sah_other_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="shopInfoLoading, shopInfoLayout, shopInfoError"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_sah_other_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="shopInfoLoading"/>

            <include
                android:id="@+id/shopInfoLoading"
                layout="@layout/setting_partial_shop_info_loading"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_sah_other_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="shopInfoLayout"/>

            <include
                android:id="@+id/shopInfoLayout"
                layout="@layout/view_sah_other_header"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_sah_other_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="shopInfoError"/>

            <include
                android:id="@+id/shopInfoError"
                android:visibility="gone"
                layout="@layout/setting_partial_shop_info_error"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/barrier_sah_other_loading"
                tools:layout_constraintTop_toBottomOf="@id/shopInfoLayout"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_white_space_height"
                app:layout_constraintTop_toBottomOf="@id/recycler_view"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>