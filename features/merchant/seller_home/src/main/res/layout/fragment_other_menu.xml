<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shopStatusHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_header_height_extra"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/setting_rm_header_background_ramadhan"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_other_menu_thematic"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:translationY="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="@id/shopStatusHeader"
        app:layout_constraintTop_toTopOf="@id/shopStatusHeader"
        app:layout_constraintEnd_toEndOf="@id/shopStatusHeader"
        tools:src="@tools:sample/avatars"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/otherMenuScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <View
                android:id="@+id/bg_white_other_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_header_height_extra"
                android:layout_marginTop="@dimen/setting_header_height"
                android:background="@color/Unify_N0"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/shopInfoLayout"
                layout="@layout/setting_partial_shop_info_success"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/shopInfoLayout"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_white_space_height"
                app:layout_constraintTop_toBottomOf="@id/recycler_view"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>