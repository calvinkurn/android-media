<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sah_other_status_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_header_height_extra"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/setting_pm_header_background"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.sellerhome.settings.view.customview.FireworksLottieView
        android:id="@+id/lottie_anniv_fireworks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationX="@dimen/sah_thematic_translation_x"
        app:layout_constraintBottom_toBottomOf="@id/iv_sah_other_status_header"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sah_other_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:translationY="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_sah_other_status_header"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_sah_other_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <View
                android:id="@+id/bg_white_other_menu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_header_height_extra"
                android:layout_marginTop="@dimen/setting_header_height"
                android:background="@color/Unify_N0"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/view_sah_other_shop_info"
                layout="@layout/view_sah_other_header"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view_sah_other_shop_info"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_white_space_height"
                app:layout_constraintTop_toBottomOf="@id/recycler_view"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>