<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ideal_description_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description_title"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="15dp"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description_desc"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:textColor="@color/sah_description_desc"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="6sp"
        app:typographyType="body_3"
        app:layout_constraintTop_toBottomOf="@id/tv_description_title"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Green_G500"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description_desc"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_description_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toTopOf="@id/tv_description_url"
        app:layout_constraintBottom_toBottomOf="@id/tv_description_url"
        app:layout_constraintStart_toEndOf="@id/tv_description_url"
        app:srcCompat="@drawable/ic_arrow_right_default" />

</androidx.constraintlayout.widget.ConstraintLayout>