<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/layout_lvl2"
    android:paddingLeft="@dimen/layout_lvl2"
    android:paddingTop="@dimen/layout_lvl2"
    android:paddingEnd="@dimen/layout_lvl2"
    android:paddingRight="@dimen/layout_lvl2"
    android:paddingBottom="@dimen/spacing_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:gravity="center_vertical"
        android:maxLength="30"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700_96"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Performa Toko" />

    <ImageView
        android:id="@+id/btnSectionInfo"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:padding="7dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tvSectionTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvSectionTitle"
        app:layout_constraintTop_toTopOf="@+id/tvSectionTitle"
        app:srcCompat="@drawable/ic_info"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSectionSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700_44"
        android:textSize="@dimen/fontSize_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSectionTitle"
        app:typographyType="body_3"
        tools:text="Subtitle" />
</androidx.constraintlayout.widget.ConstraintLayout>