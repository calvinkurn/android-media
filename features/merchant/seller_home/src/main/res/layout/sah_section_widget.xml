<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_lvl1"
    android:layout_marginBottom="@dimen/layout_lvl1"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingLeft="18dp"
    android:paddingTop="4dp"
    android:paddingEnd="18dp"
    android:paddingRight="18dp"
    android:paddingBottom="4dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_lvl3"
        android:layout_marginRight="@dimen/layout_lvl3"
        android:gravity="center_vertical"
        android:maxLength="30"
        android:maxLines="1"
        android:minHeight="22dp"
        android:textColor="@color/Neutral_N700_96"
        android:textSize="@dimen/fontSize_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        tools:text="Performa Toko" />

    <com.tokopedia.unifycomponents.UnifyImageButton
        android:id="@+id/btnSectionInfo"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSectionTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvSectionTitle"
        app:layout_constraintTop_toTopOf="@+id/tvSectionTitle"
        app:srcCompat="@drawable/ic_sah_information"
        app:unifyImageButtonVariant="image" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSectionSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/Neutral_N700_44"
        android:textSize="@dimen/fontSize_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSectionTitle"
        app:typographyType="body_3" />
</androidx.constraintlayout.widget.ConstraintLayout>