<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/shopInfoView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_shop_info_height"
        android:layout_marginTop="@dimen/setting_header_height"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"/>

    <View
        android:id="@+id/bottomRefer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_bottom_refer"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/shopInfoView"/>

    <View
        android:id="@+id/outerCircle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/settingShopGuidelineInfo"
        app:layout_constraintBottom_toBottomOf="@id/shopInfoView"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/setting_image_circular"/>

    <RelativeLayout
        android:id="@+id/innerCircle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/setting_shop_image_border_margin"
        android:background="@drawable/setting_image_circular_border_inner"
        app:layout_constraintTop_toTopOf="@id/outerCircle"
        app:layout_constraintBottom_toBottomOf="@id/outerCircle"
        app:layout_constraintStart_toStartOf="@id/outerCircle"
        app:layout_constraintEnd_toEndOf="@id/outerCircle">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/shopImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:unify_image_type="circle"/>
    </RelativeLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/setting_black_text"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@id/shopInfoView"
        app:layout_constraintStart_toStartOf="@id/settingShopGuidelineInfo"
        app:layout_constraintEnd_toEndOf="@id/settingShopGuidelineRight"
        app:layout_constraintBottom_toBottomOf="@id/settingMiddleGuideline"
        app:typographyType="heading_3"
        app:typographyWeight="bold"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shopBadges"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/settingMiddleGuideline"
        app:layout_constraintBottom_toTopOf="@id/bottomRefer"
        app:layout_constraintStart_toStartOf="@id/settingShopGuidelineInfo"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/setting_grey_text"
        android:gravity="center_vertical"
        android:text="@string/dot_string"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/settingMiddleGuideline"
        app:layout_constraintBottom_toTopOf="@id/bottomRefer"
        app:layout_constraintStart_toEndOf="@id/shopBadges"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/shopFollowers"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/setting_grey_text"
        android:gravity="center_vertical"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/settingMiddleGuideline"
        app:layout_constraintBottom_toTopOf="@id/bottomRefer"
        app:layout_constraintStart_toEndOf="@id/dot" />

    <ImageView
        android:id="@+id/settingShopNext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_sah_arrow_right"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/settingShopGuidelineRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/shopInfoView"
        app:layout_constraintBottom_toBottomOf="@id/shopInfoView"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settingShopGuidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.025"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settingShopGuidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settingShopGuidelineInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/settingMiddleGuideline"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="@id/shopInfoView"
        app:layout_constraintBottom_toBottomOf="@id/shopInfoView"/>

</androidx.constraintlayout.widget.ConstraintLayout>