<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPromoBroadcastChat"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:cardCornerRadius="@dimen/layout_lvl1"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/layout_lvl2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardPromotionIcon">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/tvRecommendedPromoTitleShimmer"
                android:layout_width="100dp"
                android:layout_height="@dimen/sah_dimen_18dp"
                app:corners="10"
                app:layout_constraintBottom_toTopOf="@id/tvRecommendedPromoDescriptionShimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />


            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/tvRecommendedPromoDescriptionShimmer"
                android:layout_width="100dp"
                android:layout_height="@dimen/sah_dimen_18dp"
                android:layout_marginTop="4dp"
                app:corners="10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRecommendedPromoTitleShimmer" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/tvRecommendedPromoExtraShimmer"
                android:layout_width="100dp"
                android:layout_height="@dimen/sah_dimen_18dp"
                android:layout_marginTop="4dp"
                app:corners="10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRecommendedPromoDescriptionShimmer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPromotionIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="@dimen/layout_lvl2"
        app:cardElevation="@dimen/layout_lvl1"
        app:contentPadding="@dimen/layout_lvl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            app:corners="10" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>