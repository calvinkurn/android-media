<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sah_list_layout_shimmering"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sah_large_widget_height"
    android:padding="@dimen/layout_lvl2">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmering_card_title"
        android:layout_width="156dp"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginTop="2dp"
        app:corners="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmering_first_info_seller_item"
        layout="@layout/sah_partial_shimmering_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/shimmering_card_title" />

    <include
        android:id="@+id/shimmering_second_info_seller_item"
        layout="@layout/sah_partial_shimmering_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/shimmering_first_info_seller_item" />

    <include
        android:id="@+id/shimmering_third_info_seller_item"
        layout="@layout/sah_partial_shimmering_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/shimmering_second_info_seller_item" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="156dp"
        android:layout_height="16dp"
        android:layout_marginTop="28dp"
        app:corners="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmering_third_info_seller_item" />

</androidx.constraintlayout.widget.ConstraintLayout>