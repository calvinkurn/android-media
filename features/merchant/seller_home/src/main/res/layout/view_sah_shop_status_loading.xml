<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_sah_shop_status_loading_border"
        android:layout_width="0dp"
        android:layout_height="@dimen/setting_card_height"
        android:background="@drawable/bg_other_rounded"
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/shimmer_sah_shop_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/setting_card_height"
        android:paddingVertical="@dimen/sah_dimen_13dp"
        android:paddingHorizontal="@dimen/layout_lvl2"
        app:corners="30"
        app:layout_constraintStart_toStartOf="@id/view_sah_shop_status_loading_border"
        app:layout_constraintEnd_toEndOf="@id/view_sah_shop_status_loading_border"
        app:layout_constraintTop_toTopOf="@id/view_sah_shop_status_loading_border"
        app:layout_constraintBottom_toBottomOf="@id/view_sah_shop_status_loading_border"/>

</androidx.constraintlayout.widget.ConstraintLayout>
