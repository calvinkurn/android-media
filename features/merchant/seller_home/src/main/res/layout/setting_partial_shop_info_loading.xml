<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/setting_partial_main_info_loading"
        android:id="@+id/view_sah_other_loading_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        layout="@layout/setting_shop_status_shimmer"
        android:id="@+id/view_sah_other_loading_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_sah_other_loading_main"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_sah_loading_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_divider_thin"
        app:layout_constraintTop_toBottomOf="@id/view_sah_other_loading_status"/>

    <include
        layout="@layout/setting_balance_loading"
        android:id="@+id/view_sah_other_loading_saldo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_balance_height"
        app:layout_constraintTop_toBottomOf="@id/divider_sah_loading_top"/>

    <include
        layout="@layout/setting_balance_loading"
        android:id="@+id/view_sah_other_loading_topads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_balance_height"
        app:layout_constraintTop_toBottomOf="@id/view_sah_other_loading_saldo"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_sah_loading_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_divider_thick"
        app:layout_constraintTop_toBottomOf="@id/view_sah_other_loading_topads"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>