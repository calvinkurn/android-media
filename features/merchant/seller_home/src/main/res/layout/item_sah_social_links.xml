<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="14dp"
    android:paddingBottom="11dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_sah_item_social"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_sah_social_ig"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sah_item_social_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_sah_item_social"
        app:layout_constraintEnd_toStartOf="@id/btn_sah_item_social"
        app:layout_constraintHorizontal_bias="0"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="@string/sah_social_ig_title"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sah_item_social_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:textColor="@color/Unify_NN600"
        android:maxLines="5"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/tv_sah_item_social_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_sah_item_social_title"
        app:layout_constraintEnd_toStartOf="@id/btn_sah_item_social"
        app:layout_constraintHorizontal_bias="0"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="@string/sah_social_ig_desc"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_sah_item_social"
        android:layout_width="64dp"
        android:layout_height="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unifyButtonVariant="ghost"
        app:unifyButtonType="main"
        app:unifyButtonSize="small"
        android:text="@string/sah_social_cta"/>

</androidx.constraintlayout.widget.ConstraintLayout>