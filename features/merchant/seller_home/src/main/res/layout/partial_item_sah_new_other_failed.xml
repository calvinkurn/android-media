<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_sah_new_other_item_failed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="@id/tv_sah_new_other_item_failed"
        app:layout_constraintBottom_toBottomOf="@id/tv_sah_new_other_item_failed"
        app:layout_constraintStart_toStartOf="parent"
        app:icon_name="RELOAD"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sah_new_other_item_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sah_new_other_item_error_margin"
        android:textColor="@color/Unify_NN950"
        android:text="@string/setting_other_failed_to_load"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_sah_new_other_item_failed"
        app:typographyType="heading_5"/>

</androidx.constraintlayout.widget.ConstraintLayout>