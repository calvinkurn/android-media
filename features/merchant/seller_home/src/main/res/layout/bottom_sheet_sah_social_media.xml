<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:paddingHorizontal="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_sah_social_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sah_social_desc"
        android:textColor="@color/Unify_NN600"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sah_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_sah_social_desc"
        tools:listitem="@layout/item_sah_social_links"
        tools:itemCount="4"/>

</androidx.constraintlayout.widget.ConstraintLayout>