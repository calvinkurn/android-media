<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sah_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_card_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/spacing_lvl2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Info Seller" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        app:layout_constraintBottom_toBottomOf="@id/tv_card_title"
        app:layout_constraintStart_toEndOf="@id/tv_card_title"
        app:layout_constraintTop_toTopOf="@id/tv_card_title"
        app:srcCompat="@drawable/ic_sah_information" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_card_title"
        tools:itemCount="3"
        tools:listitem="@layout/sah_item_list" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_see_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:lineSpacingExtra="@dimen/spacing_lvl3"
        android:text="@string/sah_more"
        android:textColor="@color/Green_G500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_item_list"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        app:layout_constraintBottom_toBottomOf="@id/tv_see_details"
        app:layout_constraintStart_toEndOf="@id/tv_see_details"
        app:layout_constraintTop_toTopOf="@id/tv_see_details"
        app:srcCompat="@drawable/ic_sah_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>