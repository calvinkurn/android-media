<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCentralizedPromoPostList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_lvl2"
    android:layout_marginTop="@dimen/spacing_lvl1"
    android:layout_marginBottom="@dimen/spacing_lvl1"
    android:descendantFocusability="blocksDescendants"
    app:cardCornerRadius="@dimen/layout_lvl1">

    <include layout="@layout/centralized_promo_partial_post_success" />

    <include layout="@layout/centralized_promo_partial_post_shimmering" />

    <ViewStub
        android:id="@+id/stubLayoutCentralizedPromoPostListError"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sah_large_widget_height"
        android:padding="@dimen/layout_lvl2"
        android:layout="@layout/centralized_promo_partial_post_error"/>

</androidx.cardview.widget.CardView>