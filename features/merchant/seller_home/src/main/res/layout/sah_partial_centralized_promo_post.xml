<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCentralizedPromoPostList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl1"
        android:layout_marginBottom="@dimen/spacing_lvl1"
        android:background="@color/transparent"
        android:descendantFocusability="blocksDescendants"
        app:cardCornerRadius="@dimen/layout_lvl1">

        <include layout="@layout/sah_partial_centralized_promo_post_success" />

        <include layout="@layout/sah_partial_centralized_promo_post_shimmering" />

        <include layout="@layout/sah_partial_centralized_promo_post_error" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
