<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ideal_description_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/sp_4"
        android:textColor="@color/sah_description_title"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description_desc"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:textColor="@color/sah_description_desc"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:lineSpacingExtra="6sp"
        app:typographyType="body_3"
        app:layout_constraintTop_toBottomOf="@id/tv_description_title"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sah_description_url"
        android:text="@string/sah_more"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="63dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description_desc" />

    <ImageView
        android:id="@+id/iv_description_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        app:layout_constraintTop_toTopOf="@id/tv_description_url"
        app:layout_constraintBottom_toBottomOf="@id/tv_description_url"
        app:layout_constraintStart_toEndOf="@id/tv_description_url"
        app:srcCompat="@drawable/icon_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>