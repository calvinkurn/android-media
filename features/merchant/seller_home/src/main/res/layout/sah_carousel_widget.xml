<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/layout_lvl1">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sah_medium_widget_height"
        android:orientation="vertical"
        android:paddingTop="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/layout_lvl2">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvBannerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:maxLines="1"
            android:textColor="@color/Neutral_N700_96"
            android:textSize="@dimen/fontSize_lvl3"
            app:typographyType="heading_5"
            app:typographyWeight="bold"
            tools:text="Title of banner" />

        <com.tokopedia.sellerhome.view.viewholder.BannerCarousel
            android:id="@+id/bannerImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/sah_partial_carousel_widget_shimmering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/sah_partial_common_widget_state_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl1" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.tokopedia.unifycomponents.CardUnify>
