<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sah_progress_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_card_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/spacing_lvl2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Power Merchant (Aktif)" />

    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        app:layout_constraintBottom_toBottomOf="@id/tv_card_title"
        app:layout_constraintStart_toEndOf="@id/tv_card_title"
        app:layout_constraintTop_toTopOf="@id/tv_card_title"
        app:srcCompat="@drawable/ic_sah_information" />

    <com.tokopedia.sellerhome.view.widget.ShopScorePMWidget
        android:id="@+id/shop_score_widget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_card_title" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:ellipsize="end"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:textColor="@color/sah_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_score_widget"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Pertahankan poin minimum 75 untuk tetap menjadi Power Merchant." />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_see_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:lineSpacingExtra="6sp"
        android:text="@string/sah_more"
        android:textColor="@color/Green_G500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        app:layout_constraintBottom_toBottomOf="@id/tv_see_details"
        app:layout_constraintStart_toEndOf="@id/tv_see_details"
        app:layout_constraintTop_toTopOf="@id/tv_see_details"
        app:srcCompat="@drawable/ic_sah_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>