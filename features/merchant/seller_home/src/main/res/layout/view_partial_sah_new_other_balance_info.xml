<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/card_sah_new_other_saldo"
        android:layout_height="@dimen/sah_new_other_balance_card_height"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_sah_new_other_balance_info">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/spacing_lvl4"
            android:background="?selectableItemBackground">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/iv_sah_new_other_saldo"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_sah_new_other_saldo_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_sah_new_other_saldo_title"
                app:srcCompat="@drawable/ic_sah_new_other_saldo"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_sah_new_other_saldo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:text="@string/setting_balance"
                android:textColor="@color/Unify_NN600"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintStart_toEndOf="@id/iv_sah_new_other_saldo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_sah_new_other_saldo"
                app:layout_constraintHorizontal_bias="0"
                app:typographyType="body_3"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_sah_new_other_saldo_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_NN950"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintTop_toBottomOf="@id/guideline_sah_new_other_saldo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:typographyType="heading_5"
                tools:text="Rp0"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/shimmer_sah_new_other_balance_saldo"
                android:layout_width="@dimen/sah_new_other_balance_info_shimmer_width"
                android:layout_height="@dimen/layout_lvl2"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline_sah_new_other_saldo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0.1"
                app:loader_corner_radius="20dp"
                app:loader_type="rect"/>

            <include
                layout="@layout/partial_item_sah_new_other_failed"
                android:id="@+id/error_state_sah_new_other_saldo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/guideline_sah_new_other_saldo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_sah_new_other_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/card_sah_new_other_topads"
        android:layout_height="@dimen/sah_new_other_balance_card_height"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_sah_new_other_balance_info"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/spacing_lvl4"
            android:background="?selectableItemBackground">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/iv_sah_new_other_topads"
                android:layout_width="@dimen/layout_lvl2"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_sah_new_other_topads_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_sah_new_other_topads_title"
                app:srcCompat="@drawable/ic_sah_new_other_topads"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_sah_new_other_topads_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl3"
                android:text="@string/setting_topads_credits"
                android:textColor="@color/Unify_NN600"
                android:ellipsize="end"
                android:lines="1"
                app:layout_constraintStart_toEndOf="@id/iv_sah_new_other_topads"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_sah_new_other_topads"
                app:layout_constraintHorizontal_bias="0"
                app:typographyType="body_3"/>

            <com.tokopedia.sellerhome.settings.view.customview.TopadsTopupView
                android:id="@+id/topads_topup_view_sah"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/guideline_sah_new_other_topads"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"/>

            <com.tokopedia.unifycomponents.LoaderUnify
                android:id="@+id/shimmer_sah_new_other_topads"
                android:layout_width="@dimen/sah_new_other_balance_info_shimmer_width"
                android:layout_height="@dimen/layout_lvl2"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline_sah_new_other_topads"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0.1"
                app:loader_type="rect"
                app:loader_corner_radius="20dp" />

            <include
                layout="@layout/partial_item_sah_new_other_failed"
                android:id="@+id/error_state_sah_new_other_topads"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/guideline_sah_new_other_topads"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_sah_new_other_topads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sah_new_other_balance_topads_bound"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_sah_new_other_topads_auto_debit_bound"
        app:layout_constraintTop_toTopOf="@id/card_sah_new_other_topads"
        app:layout_constraintBottom_toBottomOf="@id/card_sah_new_other_topads"
        app:layout_constraintEnd_toEndOf="@id/card_sah_new_other_topads"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_sah_new_other_balance_topads"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/sah_new_other_topads_auto_debit_icon_padding"
        app:layout_constraintTop_toTopOf="@id/iv_sah_new_other_balance_topads_bound"
        app:layout_constraintBottom_toBottomOf="@id/iv_sah_new_other_balance_topads_bound"
        app:layout_constraintStart_toStartOf="@id/iv_sah_new_other_balance_topads_bound"
        app:layout_constraintEnd_toEndOf="@id/iv_sah_new_other_balance_topads_bound"
        app:icon_name="AUTO_DEBIT"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_sah_new_other_balance_topads_fold"
        android:layout_width="@dimen/sah_new_other_topads_auto_debit_fold_width"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:translationY="@dimen/sah_new_other_topads_auto_debit_fold_translation_y"
        app:srcCompat="@drawable/ic_sah_new_other_topads_auto_debit_fold"
        app:layout_constraintTop_toBottomOf="@id/iv_sah_new_other_balance_topads_bound"
        app:layout_constraintEnd_toEndOf="@id/iv_sah_new_other_balance_topads_bound"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sah_new_other_balance_info"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>