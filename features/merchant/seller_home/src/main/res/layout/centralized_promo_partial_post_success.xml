<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCentralizedPromoPostListSuccess"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/sah_large_widget_height"
    android:padding="@dimen/layout_lvl2"
    android:visibility="gone">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCentralizedPromoPostListTitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Info Seller" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCentralizedPromoPostList"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl1"
        android:focusable="false"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCentralizedPromoPostListTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="3"
        tools:targetApi="lollipop" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvCentralizedPromoPostListSeeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:maxLines="1"
        android:paddingStart="@dimen/layout_lvl0"
        android:paddingEnd="@dimen/layout_lvl2"
        android:text="@string/sah_more"
        android:textColor="@color/Unify_G500"
        android:textSize="@dimen/fontSize_lvl3"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/icCentralizedPromoPostListSeeDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvCentralizedPromoPostList"
        app:typographyType="body_2"
        app:typographyWeight="reguler" />

    <ImageView
        android:id="@+id/icCentralizedPromoPostListSeeDetails"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tvCentralizedPromoPostListSeeDetails"
        app:layout_constraintLeft_toRightOf="@id/tvCentralizedPromoPostListSeeDetails"
        app:layout_constraintTop_toTopOf="@+id/tvCentralizedPromoPostListSeeDetails"
        app:srcCompat="@drawable/ic_arrow_right_default"
        android:contentDescription="@string/centralized_promo_content_desc_button_lihat_detail_promo" />

</androidx.constraintlayout.widget.ConstraintLayout>