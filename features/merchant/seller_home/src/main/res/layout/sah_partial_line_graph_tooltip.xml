<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/layout_lvl1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sah_bg_line_graph_tooltip"
        android:orientation="vertical"
        android:padding="@dimen/layout_lvl1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/Neutral_N700_68"
            android:textSize="@dimen/fontSize_lvl1"
            app:typographyType="small"
            tools:text="2 Jan" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/Neutral_N700_96"
            android:textSize="@dimen/fontSize_lvl2"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="15.000.000.000 rb" />
    </LinearLayout>
</LinearLayout>