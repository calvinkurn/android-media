<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="@dimen/layout_lvl1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingLeft="@dimen/layout_lvl2"
        android:paddingTop="@dimen/layout_lvl1"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingRight="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/layout_lvl1">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvCardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/Neutral_N700_96"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Pesanan" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvCardValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="22dp"
            android:textColor="@color/Neutral_N700_96"
            android:textSize="@dimen/fontSize_lvl4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCardTitle"
            app:typographyWeight="bold"
            tools:text="Rp999.999.999" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvCardSubValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/Neutral_N700_68"
            android:textSize="@dimen/fontSize_lvl3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCardValue"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            tools:text="Potensi +Rp10 jt" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmerCardTitle"
            android:layout_width="@dimen/layout_lvl8"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            app:corners="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/shimmerCardValue"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/layout_lvl1"
            android:visibility="gone"
            app:corners="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shimmerCardTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
