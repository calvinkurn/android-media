<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.sellerhome">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.tokopedia.sellerhome.view.home.SellerHomeActivity"
            android:exported="true"
            android:label="@string/drawer_title_home"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tkpd" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_sellerhome"/>
            </intent-filter>
            <meta-data
                android:name="APPS_HOME"
                android:value="true" />
        </activity>

        <activity
            android:name=".settings.view.activity.MenuSettingActivity"
            android:exported="true"
            android:label="@string/menu_setting_title"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />
        <activity
            android:name="com.tokopedia.centralizedpromo.view.activity.CentralizedPromoActivity"
            android:exported="true"
            android:label="@string/sh_centralized_promo_title"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White.Background">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:path="@string/path_centralized_promo"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>
