<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/text_view_title"
        style="@style/TextView.TitleBig"
        android:text="@string/product_price_locked"/>

    <TextView
        style="@style/TextView.Small"
        android:text="@string/product_price_locked_desc"
        android:layout_marginTop="@dimen/padding_ms"/>

    <com.tokopedia.design.text.SpinnerCounterInputView
        android:layout_marginTop="@dimen/new_margin_med"
        android:id="@+id/spinner_counter_input_view_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:spinner_decimal_entries="@array/product_currency_entries"
        app:spinner_decimal_hint="@string/product_label_product_price"
        app:spinner_decimal_max_length="@integer/product_max_counter_length"
        app:spinner_decimal_show_counter_button="false"
        app:spinner_decimal_values="@array/product_currency_values" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/string_picker_dialog_change"
            style="@style/TextView.Title.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/change" />

        <TextView
            android:id="@+id/string_picker_dialog_cancel"
            style="@style/TextView.Title.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toLeftOf="@id/string_picker_dialog_change"
            android:layout_toStartOf="@id/string_picker_dialog_change"
            android:text="@string/close" />

    </RelativeLayout>

</LinearLayout>