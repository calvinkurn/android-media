<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <com.tokopedia.product.manage.item.utils.LabelRadioButton
        android:id="@+id/labelRadioButtonStockAvailable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_16"
        app:lr_title="@string/product_label_stock_always_available" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

    <com.tokopedia.product.manage.item.utils.LabelRadioButton
        android:id="@+id/labelRadioButtonStockLimited"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_16"
        app:lr_title="@string/product_label_stock_limited" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

    <com.tokopedia.product.manage.item.utils.LabelRadioButton
        android:id="@+id/labelRadioButtonStockEmpty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_16"
        app:lr_title="@string/product_label_stock_empty" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_marginLeft="@dimen/dp_16" />

    <com.tokopedia.design.text.DecimalInputView
        android:id="@+id/decimalInputViewStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        app:decimal_max_length="@integer/product_max_counter_int_length"
        app:decimal_input_hint="@string/product_label_stock_count"
        android:visibility="gone"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewHelperStock"
        style="@style/TextView.Nano"
        android:text="@string/product_helper_product_stock"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"/>

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextView.TitleBig.Bold"
        android:text="@string/product_label_additional_info"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>


    <com.tokopedia.design.text.TkpdHintTextInputLayout
        style="@style/HintTextInputLayout"
        android:layout_marginTop="@dimen/dp_16"
        android:hint="@string/product_label_product_sku"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12">

        <EditText
            android:id="@+id/editTextSku"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:hint="@string/product_hint_product_sku"/>

    </com.tokopedia.design.text.TkpdHintTextInputLayout>

</LinearLayout>