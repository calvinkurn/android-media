<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.tokopedia.product.manage.item.utils.LabelRadioButton
        android:id="@+id/radioButtonAvailable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_16"
        app:lr_title="@string/product_label_stock_active" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@drawable/line_divider" />

    <com.tokopedia.product.manage.item.utils.LabelRadioButton
        android:id="@+id/radioButtonEmpty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_16"
        app:lr_title="@string/product_label_stock_nonactive" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@drawable/line_divider" />

</LinearLayout>