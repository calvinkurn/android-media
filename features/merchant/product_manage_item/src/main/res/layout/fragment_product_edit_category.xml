<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.TitleBig.Bold"
            android:text="@string/product_label_product_category"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleCategoryRecommendation"
            style="@style/TextView.Title.BlackSecondary"
            android:text="@string/product_label_category_recommendation"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/labelNotFindCategory"
            style="@style/TextView.Title.Bold"
            android:text="@string/product_label_not_find_category"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelCategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_choose_another_category"
            app:lv_content="@string/label_choose"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@drawable/line_divider"
            android:layout_marginLeft="@dimen/dp_16" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleCatalog"
            style="@style/TextView.TitleBig.Bold"
            android:text="@string/product_label_choose_product_catalog"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>

        <com.tokopedia.design.label.LabelView
            android:id="@+id/labelCatalog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:lv_content_color="@color/tkpd_main_green"
            app:lv_title="@string/product_label_catalog"
            app:lv_content="@string/label_choose"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"/>
    </LinearLayout>

</ScrollView>