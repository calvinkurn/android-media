<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/imageThumbnail"
                                    android:layout_width="@dimen/image_video_width"
                                    android:layout_height="@dimen/image_video_height" />

                                <TextView
                                    android:id="@+id/textDuration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignRight="@+id/imageThumbnail"
                                    android:layout_alignBottom="@+id/imageThumbnail"
                                    android:background="@drawable/rounded_grey"
                                    android:paddingLeft="@dimen/dp_6"
                                    android:paddingRight="@dimen/dp_6"
                                    android:paddingTop="@dimen/dp_2"
                                    android:paddingBottom="@dimen/dp_2"
                                    android:textColor="@color/white"
                                    android:layout_margin="@dimen/dp_4"
                                    style="@style/TextView.Micro"/>

                        </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/image_add_video_url_container_margin"
                    android:layout_marginStart="@dimen/image_add_video_url_container_margin"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_tag_recommendation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:text="@string/product_add_tag_video_recommendation"
                            android:background="@drawable/rounded_grey"
                            android:paddingLeft="@dimen/dp_6"
                            android:paddingRight="@dimen/dp_6"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingBottom="@dimen/dp_2"
                            android:textColor="@color/white"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginBottom="@dimen/dp_2"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:gravity="center|start"
                            style="@style/TextView.Small.BlackSecondary"
                            tools:text="Beruang Teddy\n makanya harus makan nasi banyak2 " />

                        <TextView
                            android:id="@+id/textChannel"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/text_add_video_url_description_height"
                            android:ellipsize="end"
                            android:gravity="center|start"
                            android:lines="1"
                            style="@style/TextView.Micro.BlackDisabled"
                            tools:text="Review produk baru keluaran toko souvenir dan makan nasi" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDelete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageDelete"
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            app:srcCompat="@drawable/product_manage_item_ic_delete" />

                </LinearLayout>
        </LinearLayout>

</LinearLayout>