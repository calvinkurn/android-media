<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_green_top_drawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_green_top_drawing" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_rocket_drawing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            app:layout_constraintLeft_toRightOf="@id/iv_green_top_drawing"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_rocket" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_4"
            android:textColor="@color/Unify_GN500"
            app:layout_constraintBottom_toBottomOf="@id/iv_rocket_drawing"
            app:layout_constraintLeft_toRightOf="@id/iv_rocket_drawing"
            app:layout_constraintTop_toTopOf="@id/iv_rocket_drawing"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Rilisan Spesial" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/label_campaign_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/unify_space_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tpg_campaign_type"
            tools:text="Berlangsung" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_campaign_picture"
            android:layout_width="@dimen/dp_62"
            android:layout_height="@dimen/dp_62"
            android:layout_marginStart="@dimen/unify_space_12"
            android:layout_marginTop="@dimen/unify_space_12"
            app:layout_constraintCircleRadius="6dp"
            app:layout_constraintLeft_toRightOf="@id/iv_green_top_drawing"
            app:layout_constraintTop_toBottomOf="@id/iv_rocket_drawing"
            app:srcCompat="@drawable/ic_rocket" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            app:layout_constraintLeft_toRightOf="@id/iu_campaign_picture"
            app:layout_constraintTop_toTopOf="@id/iu_campaign_picture"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Sepatu Compass Pesta Akhir Tahun 2021" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_product_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/unify_space_4"
            app:layout_constraintLeft_toRightOf="@id/iu_campaign_picture"
            app:layout_constraintTop_toBottomOf="@id/tpg_campaign_name"
            app:typographyType="body_3"
            tools:text="9000 Produk" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/unify_space_4"
            app:layout_constraintLeft_toRightOf="@id/iu_campaign_picture"
            app:layout_constraintTop_toBottomOf="@id/tpg_product_qty"
            app:typographyType="body_3"
            tools:text="17/01/2020" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_datetime_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_22"
            app:layout_constraintLeft_toRightOf="@id/tpg_campaign_start_date"
            app:layout_constraintTop_toBottomOf="@id/tpg_product_qty"
            app:srcCompat="@drawable/ic_divider_line" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/unify_space_4"
            app:layout_constraintLeft_toRightOf="@id/iv_datetime_divider"
            app:layout_constraintTop_toBottomOf="@id/tpg_product_qty"
            app:typographyType="body_3"
            tools:text="18/01/2020" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"

            android:textColor="@color/Unify_NN600"
            app:layout_constraintLeft_toRightOf="@id/iu_campaign_picture"
            app:layout_constraintTop_toBottomOf="@id/tpg_campaign_start_date"
            app:typographyType="body_3"
            tools:text="08:30 WIB" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_campaign_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintLeft_toRightOf="@id/iv_datetime_divider"
            app:layout_constraintTop_toBottomOf="@id/tpg_campaign_start_date"
            app:typographyType="body_3"
            tools:text="22:00 WIB" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_share_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginHorizontal="@dimen/unify_space_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="@drawable/bg_g500_rounded_corner"
            android:gravity="center"
            android:text="@string/action_share"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tpg_campaign_start_time"
            app:typographyType="heading_6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>