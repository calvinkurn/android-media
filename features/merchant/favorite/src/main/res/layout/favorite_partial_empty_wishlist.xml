<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_32" android:paddingStart="@dimen/dp_32"
    android:paddingEnd="@dimen/dp_32" android:paddingRight="@dimen/dp_32"
    android:background="@color/Unify_N0"
    android:visibility="gone"
    android:id="@+id/partial_empty_wishlist"
    android:layout_marginBottom="@dimen/spacing_lvl3">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/img_height"
        app:srcCompat="@drawable/favorite_ic_no_wishlist"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_lvl5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wishlist_empty_title"
        android:fontFamily="sans-serif"
        android:textColor="@color/Unify_N400"
        android:textSize="@dimen/font_medium"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_lvl3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wishlist_empty_message"
        android:fontFamily="sans-serif"
        android:textColor="@color/Unify_N150"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_lvl2"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_login"
        android:layout_width="@dimen/favorite_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl5"
        android:text="@string/favorite_empty_button"
        android:textAllCaps="false"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

</LinearLayout>