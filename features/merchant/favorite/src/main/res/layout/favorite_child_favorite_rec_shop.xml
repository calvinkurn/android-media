<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/sdk_dp_10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rec_shop_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_vs"
                android:paddingStart="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_small"
                android:paddingTop="@dimen/padding_small"
                android:maxLines="1"
                android:text="@string/recommendations_for_you"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recShopRecyclerViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Unify_N0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_shop_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Unify_N0">

            <com.tokopedia.unifyprinciples.Typography
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_vs"
                android:paddingStart="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_small"
                android:paddingTop="@dimen/padding_small"
                android:maxLines="1"
                android:text="@string/my_favorite_shop"
                android:textStyle="bold" />

        </RelativeLayout>

<!--        <com.tokopedia.topads.sdk.widget.ShopAdsWithOneProductView-->
