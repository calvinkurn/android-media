<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/recommend_shop_image_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/padding_vs"
    android:id="@+id/main_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommend_shop_image_height"
        android:background="@drawable/favorite_cards_ui_2"
        >

        <ImageView
            android:id="@+id/shop_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recommend_shop_image_height"
            android:scaleType="centerCrop"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Unify_N700_44"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/shop_icon"
                    android:layout_width="@dimen/shop_ava"
                    android:layout_height="@dimen/shop_ava"
                    android:padding="@dimen/padding_vs"
                    />

                <LinearLayout
                    android:id="@+id/shop_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_vs"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Unify_N0" />

                    <TextView
                        android:id="@+id/shop_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Unify_N0"
                        android:textSize="@dimen/fontvs"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/fav_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_fav_white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/padding_small"
                        />
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>

</LinearLayout>