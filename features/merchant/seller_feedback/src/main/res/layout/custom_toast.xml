<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toast_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutToaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toaster_bg_normal">

        <TextView
            android:id="@+id/snackbar_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toaster_text_vertical_margin"
            android:layout_marginBottom="@dimen/toaster_text_vertical_margin"
            android:paddingLeft="@dimen/toaster_text_horizontal_padding"
            android:paddingRight="@dimen/toaster_text_horizontal_padding"
            android:text="@string/feedback_form_toast_success_submit"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>