<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_toast_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toaster_bg_normal">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/snackbar_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toaster_text_vertical_margin"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/toaster_text_vertical_margin"
        android:layout_toStartOf="@+id/tvGfToasterCta"
        android:paddingLeft="@dimen/toaster_text_horizontal_padding"
        android:paddingRight="@dimen/toaster_text_horizontal_padding"
        android:text="@string/feedback_form_toast_success_submit"
        android:textColor="@color/Unify_N0" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvGfToasterCta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        android:text="@string/feedback_form_settings"
        android:textColor="@color/Unify_N0"
        android:visibility="gone"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:visibility="visible" />

</RelativeLayout>