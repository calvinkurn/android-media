<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow_top"
    android:paddingHorizontal="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/post_atc_footer_product_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/post_atc_footer_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="2dp"
        android:text="@string/pdp_post_atc_footer_description"
        android:textColor="@color/Unify_NN950"
        app:layout_constraintBottom_toTopOf="@id/post_atc_footer_info"
        app:layout_constraintEnd_toStartOf="@id/post_atc_footer_button_main"
        app:layout_constraintStart_toEndOf="@id/post_atc_footer_product_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginBottom="0dp"
        app:typographyType="display_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/post_atc_footer_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:textColor="@color/Unify_NN600"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/post_atc_footer_button_main"
        app:layout_constraintStart_toEndOf="@id/post_atc_footer_product_image"
        app:layout_constraintTop_toBottomOf="@id/post_atc_footer_description"
        app:typographyType="small"
        tools:text="Dilengkapi 1 tambahan"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/post_atc_footer_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pdp_post_atc_footer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled" />

    <com.tokopedia.iconunify.IconUnify
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_circle_more"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_name="CHECK_CIRCLE"
        app:layout_constraintBottom_toBottomOf="@id/post_atc_footer_product_image"
        app:layout_constraintEnd_toEndOf="@id/post_atc_footer_product_image" />

</androidx.constraintlayout.widget.ConstraintLayout>