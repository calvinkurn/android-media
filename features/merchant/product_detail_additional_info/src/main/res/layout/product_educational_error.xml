<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="24dp">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pdp_educational_error_title"
        app:typographyType="heading_2"
        tools:text="Oops, info gagal ditampilkan" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/pdp_educational_error_desc"
        android:textColor="@color/Unify_NN600"
        app:typographyType="paragraph_2"
        tools:text="Coba muat ulang untuk lihat infonya, yuk. Pastikan juga internetmu lancar, ya." />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/product_educational_error_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/pdp_educational_error_btn"
        app:unifyButtonSize="medium"
        tools:text="Coba Lagi" />

</androidx.appcompat.widget.LinearLayoutCompat>