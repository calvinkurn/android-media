<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.product.detail">

    <application>
        <activity
            android:name="com.tokopedia.product.detail.bseducational.view.ProductEducationalActivity"
            android:exported="false"
            android:label="@string/pdp_common_educational_title"
            android:theme="@style/Theme.AppCompat.DayNight.Translucent">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_product_educational"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.tokopedia.product.detail.postatc.view.PostAtcActivity"
            android:exported="false"
            android:label="ini POST ATC"
            android:theme="@style/Theme.AppCompat.DayNight.Translucent">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_marketplace"
                    android:pathPattern="@string/path_post_atc"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

    </application>
</manifest>
