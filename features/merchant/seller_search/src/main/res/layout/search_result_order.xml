<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleResultOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="true"
        app:typographyWeight="bold"
        app:typographyType="body_3"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:textColor="@color/clrAd31353b"
        tools:text="Pesanan"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResultOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleResultOrder"
        tools:itemCount="5"
        tools:listitem="@layout/item_search_result_order" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierMoreResultOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvMoreResultOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvResultOrder" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMoreResultOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvResultOrder"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        android:background="?selectableItemBackground"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:textColor="@color/clr03AC0E"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Lihat 3 lainnya di halaman produk"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerOrder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/barrierMoreResultOrder"/>

</androidx.constraintlayout.widget.ConstraintLayout>