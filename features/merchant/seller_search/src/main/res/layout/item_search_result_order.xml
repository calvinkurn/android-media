<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/spacing_lvl4"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:layout_marginTop="@dimen/spacing_lvl4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivSearchResultOrder"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="4"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSearchResultOrderTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="body_2"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSearchResultOrder"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bedak Marks"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSearchResultOrderDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSearchResultOrder"
        app:layout_constraintTop_toBottomOf="@id/tvSearchResultOrderTitle"
        tools:text="Cari produk di pesanan"/>

</androidx.constraintlayout.widget.ConstraintLayout>