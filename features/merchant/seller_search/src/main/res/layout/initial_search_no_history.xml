<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:paddingStart="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivNoHistory"
        android:layout_width="@dimen/ic_no_history_width"
        android:layout_height="@dimen/ic_no_history_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleNoHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivNoHistory"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/title_no_history_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescNoHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintTop_toBottomOf="@id/tvTitleNoHistory"
        app:layout_constraintStart_toEndOf="@id/ivNoHistory"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/desc_no_history_label" />

</androidx.constraintlayout.widget.ConstraintLayout>