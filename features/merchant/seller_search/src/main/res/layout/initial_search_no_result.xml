<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:paddingStart="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleNoResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        android:text="@string/message_initial_search_no_result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvDescNoResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        android:text="@string/message_initial_search_try_another_keyword"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintTop_toBottomOf="@id/tvTitleNoResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>