<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleResultProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="true"
        app:typographyWeight="bold"
        app:typographyType="body_3"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:textColor="@color/light_N700_68"
        tools:text="Produk"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResultProduct"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleResultProduct"
        android:clipToPadding="false"
        tools:itemCount="5"
        tools:listitem="@layout/item_search_result_product" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierMoreResultProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tvMoreResultProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvResultProduct" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMoreResultProduct"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvResultProduct"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:textColor="@color/light_G500"
        android:background="?selectableItemBackground"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Lihat 3 lainnya di halaman produk"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerProduct"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/barrierMoreResultProduct"/>

</androidx.constraintlayout.widget.ConstraintLayout>