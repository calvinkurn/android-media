<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvTitleResultProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="true"
        app:typographyWeight="bold"
        app:typographyType="body_3"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:textColor="@color/clrAd31353b"
        tools:text="Produk"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResultProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleResultProduct"
        android:paddingBottom="@dimen/spacing_lvl3"
        android:clipToPadding="false"
        tools:listitem="@layout/item_search_result_product" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/dividerProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:layout_constraintTop_toBottomOf="@id/rvResultProduct"/>

</androidx.constraintlayout.widget.ConstraintLayout>