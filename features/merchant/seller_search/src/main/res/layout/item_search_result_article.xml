<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_lvl4"
    android:paddingEnd="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingBottom="@dimen/spacing_lvl3"
    android:background="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/ivSearchResultArticle"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvSearchResultArticleTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvSearchResultArticleDesc"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:unify_image_corner_radius="4"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSearchResultArticleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="body_2"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/spacing_lvl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSearchResultArticle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Inspirasi Seller: Gantungan Baju, Sukses Berbisnis dengan Modal Minim"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvSearchResultArticleDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/spacing_lvl3"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSearchResultArticle"
        app:layout_constraintTop_toBottomOf="@id/tvSearchResultArticleTitle"
        tools:text="Untuk berbisnis, hal pertama yang dibutuhkan adalah keberanian untuk â€¦"/>

</androidx.constraintlayout.widget.ConstraintLayout>