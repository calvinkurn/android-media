<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.vouchercreation">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".voucherlist.view.activity.VoucherListActivity"
            android:label="@string/title_voucher_creation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustPan"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_sellerapp"
                    android:path="@string/path_voucher_list"
                    android:scheme="@string/internal_scheme" />
                <data
                    android:host="@string/host_sellerapp"
                    android:path="@string/path_voucher_list_active"
                    android:scheme="@string/internal_scheme" />
                <data
                    android:host="@string/host_sellerapp"
                    android:path="@string/path_voucher_list_history"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".create.view.activity.CreateMerchantVoucherStepsActivity"
            android:exported="true"
            android:label="@string/title_voucher_creation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_sellerapp"
                    android:path="@string/path_create_voucher"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".detail.view.activity.VoucherDetailActivity"
            android:label="@string/title_voucher_creation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_sellerapp"
                    android:path="@string/path_voucher_detail"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>
    </application>
</manifest>
