<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mvc_dimen_12dp">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmerMvc0"
            android:layout_width="@dimen/mvc_dimen_100dp"
            android:layout_height="8dp"
            app:loader_corner_radius="5dp"
            app:loader_type="rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmerMvc1"
            android:layout_width="@dimen/mvc_dimen_100dp"
            android:layout_height="8dp"
            app:loader_corner_radius="5dp"
            app:loader_type="rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmerMvc2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            app:loader_corner_radius="5dp"
            app:loader_type="rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shimmerMvc0" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmerMvc3"
            android:layout_width="@dimen/mvc_dimen_140dp"
            android:layout_height="@dimen/mvc_dimen_12dp"
            android:layout_marginStart="@dimen/mvc_dimen_12dp"
            android:layout_marginLeft="@dimen/mvc_dimen_12dp"
            app:loader_corner_radius="5dp"
            app:loader_type="rect"
            app:layout_constraintStart_toEndOf="@+id/shimmerMvc2"
            app:layout_constraintTop_toTopOf="@+id/shimmerMvc2" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmerMvc4"
            android:layout_width="@dimen/mvc_dimen_100dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            app:loader_corner_radius="5dp"
            app:loader_type="rect"
            app:layout_constraintStart_toStartOf="@+id/shimmerMvc3"
            app:layout_constraintTop_toBottomOf="@+id/shimmerMvc3" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmerMvc5"
            android:layout_width="48dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/mvc_dimen_20dp"
            app:loader_corner_radius="5dp"
            app:loader_type="rect"
            app:layout_constraintStart_toStartOf="@+id/shimmerMvc3"
            app:layout_constraintTop_toBottomOf="@+id/shimmerMvc4" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmerMvc6"
            android:layout_width="48dp"
            android:layout_height="@dimen/mvc_dimen_12dp"
            android:layout_marginTop="8dp"
            app:loader_corner_radius="5dp"
            app:loader_type="rect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/shimmerMvc3"
            app:layout_constraintTop_toBottomOf="@+id/shimmerMvc5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>