                android:layout_marginTop="@dimen/unify_space_24"
                android:layout_marginEnd="@dimen/unify_space_16"
                android:background="@drawable/mvc_rectangle_grey_f8fafc_radius_4dp"
                android:padding="@dimen/unify_space_12"
                app:layout_constraintStart_toStartOf="@+id/typography21"
                app:layout_constraintTop_toBottomOf="@+id/typography21">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/maximum_expense_estimation"
                    android:textColor="@color/Neutral_N700_96"
                    app:typographyType="heading_6" />

                <ImageView
                    android:id="@+id/imgExpenseEstimationDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/unify_space_4"
                    android:layout_toEndOf="@id/typography20"
                    android:contentDescription="@string/maximum_expense_estimation"
                    android:src="@drawable/ic_info_outline" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/typography20"
                    android:layout_marginTop="@dimen/unify_space_2"
                    android:text="@string/expense_description"
                    android:textColor="@color/Neutral_N700_96"
                    app:typographyType="body_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tpg_expense_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/typography20"
                    android:layout_alignTop="@id/typography20"
                    android:layout_alignBottom="@id/typography30"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/unify_space_2"
                    android:gravity="center"
                    android:text="@string/hyphen"
                    android:textColor="@color/Neutral_N700_96"
                    app:typographyType="heading_5"
                    tools:text="Rp 20.000" />

            </RelativeLayout>

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/dividerUnify"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unify_space_2"
                android:layout_marginTop="@dimen/unify_space_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutExpenseEstimation" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/typography22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/layout_lvl2"
                android:text="@string/product_list"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerUnify"
                app:typographyType="heading_5" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgAddProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/unify_space_16"
                android:text="@string/add_product"
                android:textColor="@color/Unify_G500"
                app:layout_constraintBottom_toBottomOf="@+id/typography22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/typography22"
                app:typographyType="heading_6" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/labelProductCompleteStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_12"
                android:text="@string/incomplete"
                app:labelType="highlight_light_grey"
                app:layout_constraintBottom_toBottomOf="@+id/typography22"
                app:layout_constraintStart_toEndOf="@+id/typography22"
                app:layout_constraintTop_toTopOf="@+id/typography22" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/typography23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/unify_space_24"
                android:text="@string/listed_product"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/typography22"
                app:typographyType="body_2" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgMaxProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/unify_space_4"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/typography23"
                app:typographyType="small"
                tools:text="@string/placeholder_max_product" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgProductCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_24"
                android:layout_marginEnd="@dimen/unify_space_24"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/no_products"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintBottom_toBottomOf="@+id/typography23"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/typography23" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgUpdateProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/unify_space_24"
                android:layout_marginTop="@dimen/unify_space_4"
                android:layout_marginEnd="@dimen/unify_space_24"
                android:text="@string/manage_product"
                android:textColor="@color/Unify_G500"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/tpgProductCount"
                app:typographyType="heading_5"
                tools:visibility="visible" />

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/dividerBottom"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unify_space_2"
                android:layout_marginTop="@dimen/unify_space_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tpgMaxProduct" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnPreviewCouponImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/unify_space_8"
                android:text="@string/check_coupon_appearance"
                app:layout_constraintEnd_toStartOf="@+id/btnCreateCoupon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerBottom"
                app:layout_constraintTop_toTopOf="@+id/dividerBottom"
                app:unifyButtonSize="medium"
                app:unifyButtonType="alternate"
                app:unifyButtonVariant="ghost" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnCreateCoupon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/layout_lvl2"
                android:text="@string/create_coupon"
                app:layout_constraintBottom_toBottomOf="@+id/btnPreviewCouponImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnPreviewCouponImage"
                app:layout_constraintTop_toTopOf="@+id/btnPreviewCouponImage"
                app:unifyButtonRightLoader="false"
                app:unifyButtonSize="medium"
                app:unifyButtonVariant="filled" />

            <TextView
                android:id="@+id/tpgTermAndConditions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginTop="@dimen/unify_space_12"
                android:layout_marginEnd="@dimen/layout_lvl2"
                android:layout_marginBottom="@dimen/layout_lvl3"
                android:gravity="center"
                android:text="@string/coupon_product_terms_and_condition"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCreateCoupon" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupMaxDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="typography18,tpgMaxDiscount"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupMinimumPurchaseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="typography14,tpgMinimumPurchaseType"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupDiscountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="typography12,tpgDiscountType"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupDiscountAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tpgDiscountAmount,tpgDiscountAmountLabel"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupMinimumPurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="typography15,tpgMinimumPurchase"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupCouponCode"
                android:layout_width="wrap_content"
                tools:visibility="visible"
                android:visibility="gone"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="imgCopyToClipboard,tpgCouponCode,typography" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.tokopedia.empty_state.EmptyStateUnify
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/unify_space_32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader"
        android:layout_width="@dimen/unify_space_64"
        android:layout_height="@dimen/unify_space_64"
        android:layout_margin="@dimen/unify_space_16"
        android:layout_gravity="center"
        app:loader_type="circular" />

</LinearLayout>
