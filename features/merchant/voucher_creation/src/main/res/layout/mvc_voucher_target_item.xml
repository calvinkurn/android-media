<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/voucherTargetItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mvc_card_border"
    android:padding="@dimen/mvc_create_target_card_padding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/voucherTargetItemIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintDimensionRatio="1:1"
        tools:src="@drawable/ic_im_umum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherTargetItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mvc_create_target_title_margin_left"
        android:layout_marginStart="@dimen/mvc_create_target_title_margin_left"
        android:textColor="@color/mvc_text_color_black"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        app:layout_constraintStart_toEndOf="@id/voucherTargetItemIcon"
        app:layout_constraintTop_toTopOf="@id/voucherTargetItemIcon"/>

    <TextView
        android:id="@+id/voucherTargetItemDescription"
        android:layout_width="0dp"
        android:layout_height="@dimen/mvc_create_target_description_height"
        android:layout_marginTop="@dimen/mvc_create_target_description_margin_top"
        android:layout_marginEnd="@dimen/mvc_create_target_description_margin_right"
        android:layout_marginRight="@dimen/mvc_create_target_description_margin_right"
        android:maxLines="3"
        android:textColor="@color/mvc_text_color_black"
        android:textSize="@dimen/mvc_create_target_description_size"
        android:lineSpacingExtra="@dimen/mvc_create_target_description_line_spacing"
        app:layout_constraintStart_toStartOf="@id/voucherTargetItemTitle"
        app:layout_constraintEnd_toStartOf="@id/voucherTargetItemRadioButton"
        app:layout_constraintTop_toBottomOf="@id/voucherTargetItemTitle" />

    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
        android:id="@+id/voucherTargetItemRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/voucherTargetItem"/>

    <com.tokopedia.vouchercreation.create.view.customview.VoucherTargetPromoCodeInfo
        android:id="@+id/voucherTargetPromoCodeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/voucherTargetItemDescription"/>

    <View
        android:id="@+id/voucherTargetDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mvc_create_divider_height"
        android:layout_marginTop="@dimen/mvc_create_divider_margin"
        android:layout_marginBottom="@dimen/mvc_create_target_card_padding"
        android:background="@color/mvc_color_grey"
        app:layout_constraintTop_toBottomOf="@id/voucherTargetPromoCodeInfo"
        app:layout_constraintBottom_toTopOf="@id/voucherTargetDisplayVoucherText"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherTargetDisplayVoucherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mvc_text_color_green"
        android:text="@string/mvc_create_display_voucher"
        app:typographyType="body_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>



