<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/chipImageHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:centerText="true"
            app:chipSize="medium"
            app:chipText="@string/image_ratio_tall"
            app:chipType="selected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/chipImageRatioSquare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:centerText="true"
            app:chipSize="medium"
            app:chipText="@string/image_ratio_square"
            app:chipType="normal"
            app:layout_constraintBottom_toBottomOf="@+id/chipImageHorizontal"
            app:layout_constraintStart_toEndOf="@id/chipImageHorizontal"
            app:layout_constraintTop_toTopOf="@+id/chipImageHorizontal" />

        <com.tokopedia.unifycomponents.ChipsUnify
            android:id="@+id/chipImageVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:centerText="true"
            app:chipSize="medium"
            app:chipText="@string/image_ratio_wide"
            app:chipType="normal"
            app:layout_constraintBottom_toBottomOf="@+id/chipImageRatioSquare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/chipImageRatioSquare"
            app:layout_constraintTop_toTopOf="@+id/chipImageHorizontal" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/loader"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipImageRatioSquare"
            app:loader_type="circle" />

        <ImageView
            android:id="@+id/imgCoupon"
            android:contentDescription="@string/image_coupon_content_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipImageHorizontal"
            tools:minHeight="@dimen/dp_120"
            tools:src="@drawable/mvc_view_voucher_status_green" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>