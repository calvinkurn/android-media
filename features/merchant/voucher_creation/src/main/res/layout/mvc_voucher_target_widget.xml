<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.vouchercreation.shop.create.view.customview.VoucherCreateTitleView
        android:id="@+id/voucherTargetWidgetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/mvc_create_target_widget_title"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/voucherTargetWidgetRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/voucherTargetWidgetTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:itemCount="2"
        tools:listitem="@layout/mvc_voucher_target_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>