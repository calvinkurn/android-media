<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgMvcVoucher"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/mvc_voucher_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/img_mvc_cashback_khusus" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcVoucherName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mvc_dimen_12dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/light_N700_96"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tvMvcVoucherDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgMvcVoucher"
        app:layout_constraintTop_toTopOf="@+id/imgMvcVoucher"
        tools:text="Hura Hura Hujan Rejeki" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcVoucherDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mvc_dimen_12dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/light_N700_96"
        app:layout_constraintBottom_toBottomOf="@+id/imgMvcVoucher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgMvcVoucher"
        app:layout_constraintTop_toBottomOf="@+id/tvMvcVoucherName"
        app:typographyType="body_3"
        tools:text="Hura Hura Hujan Rejeki" />

    <View
        android:id="@+id/vMvcVerLine0"
        android:layout_width="0dp"
        android:layout_height="@dimen/mvc_dimen_1dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgMvcVoucher" />

    <ImageView
        android:id="@+id/icMvcTips"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/mvc_tips"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMvcTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMvcTips"
        app:srcCompat="@drawable/ic_mvc_tips_yellow" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mvc_dimen_10dp"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/mvc_you_only_can_add_voucher_quota_as_long_voucher_is_live"
        android:textColor="@color/light_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icMvcTips"
        app:layout_constraintTop_toBottomOf="@+id/vMvcVerLine0"
        app:typographyType="body_3" />

    <View
        android:id="@+id/vMvcVerLine1"
        android:layout_width="0dp"
        android:layout_height="@dimen/mvc_dimen_1dp"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        android:background="@color/light_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMvcTips" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/editMvcQuota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mvc_dimen_20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vMvcVerLine1"
        app:text_field_input_type="number"
        app:text_field_label="@string/mvc_voucher_quota" />

    <com.tokopedia.vouchercreation.common.view.voucherticker.VoucherTickerView
        android:id="@+id/mvcTicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/mvc_rectangle_grey_f8fafc_radius_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editMvcQuota"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnMvcSaveQuota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="@dimen/mvc_dimen_20dp"
        android:layout_marginBottom="16dp"
        android:text="@string/mvc_save_changes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mvcTicker"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>