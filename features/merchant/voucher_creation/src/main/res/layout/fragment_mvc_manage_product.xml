<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_selected_product_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_16"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        tools:text="Jumlah Produk (13/100)" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mvc_dimen_14dp"
        android:layout_marginEnd="@dimen/unify_space_16"
        android:text="@string/add_product"
        android:textColor="@color/unify_G500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/du_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mvc_dimen_1dp"
        app:layout_constraintTop_toBottomOf="@id/tpg_selected_product_counter" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/empty_products_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mvc_dimen_40dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/du_top">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_empty_products"
            android:layout_width="@dimen/mvc_dimen_280dp"
            android:layout_height="@dimen/mvc_dimen_210dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_mvc_empty_products" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_no_product_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_8"
            android:text="@string/mvc_no_products"
            android:textColor="@color/Neutral_N700_96"
            android:textSize="@dimen/unify_font_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iu_empty_products" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_add_coupon_product_wording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mvc_dimen_12dp"
            android:text="@string/mvc_add_coupon_product"
            android:textColor="@color/Unify_N700_68"
            android:textSize="@dimen/unify_font_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tpg_no_product_header" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/button_add_product"
            android:layout_width="@dimen/mvc_dimen_240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unify_space_24"
            android:text="@string/add_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tpg_add_coupon_product_wording" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selection_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mvc_dimen_24dp"
        android:paddingBottom="@dimen/unify_space_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/du_top">

        <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
            android:id="@+id/cbu_select_all_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/mvc_dimen_10dp"
            android:text="@string/mvc_select_all"
            app:layout_constraintLeft_toRightOf="@id/cbu_select_all_product"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/delete_product_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/mvc_dimen_10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpg_delete_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/unify_space_16"
                android:text="@string/mvc_delete_product"
                android:textColor="@color/unify_G500"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mvc_dimen_6dp"
                app:layout_constraintRight_toLeftOf="@id/tpg_delete_product"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_delete_green" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/unify_space_8"
        android:layout_marginBottom="@dimen/unify_space_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selection_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>