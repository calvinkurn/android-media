<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/voucherTipsInfoImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintWidth_percent="@integer/mvc_create_icon_image_width_percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_im_rupiah"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherTipsInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/voucherTipsInfoImage"
        tools:text="Rupiah"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherTipsInfoDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="@id/voucherTipsInfoTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voucherTipsInfoTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Total transaksi pembeli tidak akan mempengaruhi nominal cashback yang sudah kamu tentukan"/>

</androidx.constraintlayout.widget.ConstraintLayout>