<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.vouchercreation.create.view.customview.VoucherTargetCardItem
        android:id="@+id/test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.vouchercreation.create.view.customview.VoucherTargetCardItem
        android:id="@+id/test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/test1"
        app:layout_constraintStart_toStartOf="parent"
        app:targetType="targetSpecial"
        app:isHavePromoCode="true"
        app:isEnabled="true"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mvc_create_next_button_margin"
        android:text="@string/mvc_create_step_next"
        app:unifyButtonVariant="filled"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>