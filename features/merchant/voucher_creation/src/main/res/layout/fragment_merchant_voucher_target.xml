<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:fillViewport="true"
    android:id="@+id/voucherTargetScrollView"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:tag="voucher_target_recycler_view"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="1"
            tools:listitem="@layout/mvc_voucher_target_widget"/>

        <com.tokopedia.unifycomponents.DividerUnify
            android:id="@+id/fillVoucherNameDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_view"
            app:layout_constraintBottom_toTopOf="@id/fillVoucherNameTitle"/>

        <com.tokopedia.vouchercreation.create.view.customview.VoucherCreateTitleView
            android:id="@+id/fillVoucherNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:title="@string/mvc_create_voucher_name_widget_title"
            app:layout_constraintTop_toBottomOf="@id/fillVoucherNameDivider"
            app:layout_constraintBottom_toTopOf="@id/fillVoucherNameTextfield"/>

        <com.tokopedia.unifycomponents.TextFieldUnify
            android:id="@+id/fillVoucherNameTextfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2"
            android:layout_marginBottom="@dimen/layout_lvl3"
            app:text_field_placeholder="@string/mvc_create_voucher_name_textfield_hint"
            app:text_field_counter="@integer/create_voucher_name_max_length"
            app:layout_constraintTop_toBottomOf="@id/fillVoucherNameTitle"
            app:layout_constraintBottom_toTopOf="@id/voucherTargetNextButton"/>

        <com.tokopedia.vouchercreation.create.view.customview.NextStepButton
            android:tag="voucher_target_next_step_button"
            android:id="@+id/voucherTargetNextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fillVoucherNameTextfield"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
