<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgMvcNoResultState"
        android:layout_width="@dimen/mvc_dimen_120dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_voucher_list_no_result_content_description" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcNoResultStateTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/mvc_no_result_found"
        android:textColor="@color/light_N700_96"
        app:layout_constraintBottom_toTopOf="@+id/tvMvcNoResultStateDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgMvcNoResultState"
        app:layout_constraintTop_toTopOf="@+id/imgMvcNoResultState"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcNoResultStateDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/mvc_please_try_to_search_again"
        android:textColor="@color/light_N700_68"
        app:layout_constraintBottom_toBottomOf="@+id/imgMvcNoResultState"
        app:layout_constraintEnd_toEndOf="@+id/tvMvcNoResultStateTitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvMvcNoResultStateTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvMvcNoResultStateTitle"
        app:typographyType="body_3" />

</androidx.constraintlayout.widget.ConstraintLayout>