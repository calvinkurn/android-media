<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/createPromoCodeTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:text_field_label="@string/mvc_create_promo_code_title"
        app:text_field_message="@string/mvc_create_promo_code_message_easy_remember"
        app:text_field_prepend_text="@string/mvc_create_promo_code_prefix"
        app:text_field_counter="@integer/create_promo_code_max_length"/>

    <include
        android:id="@+id/createPromoCodeInfo"
        layout="@layout/mvc_create_promo_code_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mvc_create_promo_code_info_margin"
        android:layout_marginBottom="@dimen/mvc_create_promo_code_info_margin"
        app:layout_constraintTop_toBottomOf="@id/createPromoCodeTextField"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/createPromoCodeSaveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/mvc_create_save"
        app:unifyButtonVariant="filled"
        app:unifyButtonSize="medium"
        app:unifyButtonType="main"
        app:layout_constraintTop_toBottomOf="@id/createPromoCodeInfo"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>