<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingTop="@dimen/mvc_dimen_20dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcInfoKey"
        android:layout_width="@dimen/layout_lvl9"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        tools:text="Voucher Target" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcInfoValue"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toStartOf="@+id/imgMvcVoucherCopy"
        app:layout_constraintStart_toEndOf="@+id/tvMvcInfoKey"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Hura Hura Hujan Rejeki" />

    <ImageView
        android:id="@+id/imgMvcVoucherCopy"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:background="@drawable/mvc_rectangle_white_radius_4dp"
        android:padding="@dimen/spacing_lvl2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvMvcInfoValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMvcInfoValue"
        app:srcCompat="@drawable/ic_mvc_duplicate"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>