<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingTop="@dimen/mvc_dimen_20dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcInfoKey"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        tools:text="Voucher Target" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcInfoValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toStartOf="@+id/imgMvcVoucherCopy"
        app:layout_constraintStart_toEndOf="@+id/tvMvcInfoKey"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Hura Hura Hujan Rejeki" />

    <ImageView
        android:id="@+id/imgMvcVoucherCopy"
        android:contentDescription="@string/image_copy_subinfo_content_description"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/mvc_rectangle_white_radius_4dp"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvMvcInfoValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMvcInfoValue"
        app:srcCompat="@drawable/ic_mvc_duplicate"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>