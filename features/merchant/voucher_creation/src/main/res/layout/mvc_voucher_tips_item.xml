<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherTipsTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/mvc_create_voucher_tips_item_height"
        app:layout_constraintWidth_percent="@integer/mvc_create_voucher_tips_item_width_percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/voucherTipsChevron"
        android:layout_width="@dimen/mvc_create_voucher_tips_item_arrow_width"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_mvc_chevron_down"
        app:layout_constraintStart_toEndOf="@id/voucherTipsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/voucherTipsTitle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/voucherTipsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/voucherTipsTitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>