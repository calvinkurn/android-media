<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unify_header_is_show_shadow="false" />

    <ScrollView
        android:id="@+id/scrollViewCouponDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutCouponDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/layoutCouponTarget"
                layout="@layout/partial_mvc_create_coupon_target"/>

            <include
                android:id="@+id/layoutCouponName"
                layout="@layout/partial_mvc_create_coupon_name"/>

            <include
                android:id="@+id/layoutCouponDate"
                layout="@layout/partial_mvc_create_coupon_date"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.tokopedia.vouchercreation.shop.create.view.customview.NextStepButton
                android:id="@+id/btnCouponCreateNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>
