<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mvc_bg_button_download"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:layout_width="@dimen/mvc_dimen_12dp"
        android:layout_height="@dimen/mvc_dimen_12dp"
        android:tint="@color/Neutral_N0"
        app:srcCompat="@drawable/ic_mvc_download"
        tools:src="@drawable/ic_mvc_download"
        android:contentDescription="@string/image_coupon_download_content_description"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mvc_dimen_6dp"
        android:layout_marginLeft="@dimen/mvc_dimen_6dp"
        android:text="@string/mvc_download"
        android:textColor="@color/Neutral_N0"
        app:typographyType="body_3"
        app:typographyWeight="bold" />
</LinearLayout>