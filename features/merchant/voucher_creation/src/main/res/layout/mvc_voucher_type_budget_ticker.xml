<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/typeBudgetTickerDividerTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mvc_divider_height"
        android:background="@color/Neutral_N75"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/typeBudgetTipsIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/ic_mvc_tips_yellow"
        app:layout_constraintVertical_bias="@integer/mvc_create_voucher_type_budget_ticker_tips_vertical_bias"
        app:layout_constraintTop_toBottomOf="@id/typeBudgetTickerDividerTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/typeBudgetTickerDividerBottom"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typeBudgetTickerDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginStart="@dimen/mvc_create_voucher_type_budget_ticker_desc_margin_left"
        android:layout_marginLeft="@dimen/mvc_create_voucher_type_budget_ticker_desc_margin_left"
        android:paddingTop="@dimen/mvc_create_voucher_type_budget_ticker_padding_vertical"
        android:paddingBottom="@dimen/mvc_create_voucher_type_budget_ticker_padding_vertical"
        app:layout_constraintWidth_percent="@integer/mvc_create_voucher_type_budget_ticker_desc_width_percent"
        app:typographyType="body_3"
        app:layout_constraintStart_toEndOf="@id/typeBudgetTipsIcon"
        app:layout_constraintTop_toBottomOf="@id/typeBudgetTickerDividerTop"
        app:layout_constraintBottom_toTopOf="@id/typeBudgetTickerDividerBottom"
        tools:text="@string/mvc_create_promo_type_cashback_ticker"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/typeBudgetTickerClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_mvc_close"
        app:layout_constraintWidth_percent="@integer/mvc_create_voucher_type_budget_ticker_icon_width_percent"
        app:layout_constraintVertical_bias="@integer/mvc_create_voucher_type_budget_ticker_close_vertical_bias"
        app:layout_constraintTop_toBottomOf="@id/typeBudgetTickerDividerTop"
        app:layout_constraintBottom_toTopOf="@id/typeBudgetTickerDividerBottom"
        app:layout_constraintStart_toEndOf="@id/typeBudgetTickerDesc"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/typeBudgetTickerDividerBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mvc_divider_height"
        android:background="@color/Neutral_N75"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>