<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:padding="@dimen/layout_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/successTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:lines="2"
        app:typographyType="heading_2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/mvc_success_create_title"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/successDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:text="@string/mvc_success_create_desc"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/successTitle"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/successLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mvc_bg_success"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/successDesc">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/successImage"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintWidth_percent="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/successInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mvc_success_info_margin"
            android:layout_marginStart="@dimen/mvc_success_info_margin"
            android:text="@string/mvc_success_active_info"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/successDate"
            app:layout_constraintStart_toEndOf="@id/successImage"/>

        <com.tokopedia.vouchercreation.detail.view.component.StartEndVoucher
            android:id="@+id/successDate"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mvc_success_info_margin"
            android:layout_marginStart="@dimen/mvc_success_info_margin"
            app:layout_constraintStart_toEndOf="@id/successImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/successInfo"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/successShareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl4"
        android:text="@string/mvc_share_now"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        app:unifyButtonVariant="filled"
        app:layout_constraintTop_toBottomOf="@id/successLayout"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/successDownloadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl2"
        android:text="@string/mvc_download"
        app:unifyButtonSize="large"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        app:layout_constraintTop_toBottomOf="@id/successShareButton"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>