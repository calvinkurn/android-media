<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/voucher_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mvc_gradient_green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_tkpd_voucher"
            android:layout_width="@dimen/mvc_dimen_215dp"
            android:layout_height="@dimen/mvc_dimen_174dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/mvc_voucher_scheduled_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iu_tkpd_voucher"
            app:typographyType="heading_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_voucher_period_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintTop_toBottomOf="@id/tgp_title"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            tools:text="@string/mvc_voucher_period_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tgp_voucher_period_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tgp_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mvc_dimen_26dp"
        android:layout_marginTop="16dp"
        android:text="@string/mvc_success_create_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voucher_info_layout"
        app:typographyType="heading_4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/broadcast_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/mvc_dimen_26dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/mvc_rectangle_n75_border_rounded_corner_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tgp_header">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_bc_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mvc_dimen_10dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_mvc_broadcast" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_bc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/mvc_via_broadcast"
            app:layout_constraintLeft_toRightOf="@id/iu_bc_logo"
            app:layout_constraintTop_toTopOf="@id/iu_bc_logo"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/mvc_rectangle_g500_rounded_corner_bg"
            android:paddingHorizontal="4dp"
            android:paddingVertical="@dimen/mvc_dimen_2dp"
            android:text="@string/mvc_free"
            android:textColor="@color/Unify_Static_White"
            app:layout_constraintBottom_toBottomOf="@id/tgp_bc_title"
            app:layout_constraintLeft_toRightOf="@id/tgp_bc_title"
            app:layout_constraintTop_toTopOf="@id/tgp_bc_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mvc_dimen_2dp"
            android:layout_marginBottom="@dimen/mvc_dimen_12dp"
            android:text="@string/mvc_increase_voucher_usage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tgp_bc_title"
            app:layout_constraintTop_toBottomOf="@id/tgp_bc_title"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_chevron_right" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/social_media_share_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mvc_rectangle_n75_border_rounded_corner_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/broadcast_button">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/iu_share_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mvc_dimen_10dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_mvc_share"
            app:unify_image_corner_radius="0" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgp_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/mvc_via_social_media"
            app:layout_constraintLeft_toRightOf="@id/iu_share_logo"
            app:layout_constraintTop_toTopOf="@id/iu_share_logo"
            app:typographyType="body_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mvc_dimen_2dp"
            android:layout_marginBottom="@dimen/mvc_dimen_12dp"
            android:text="@string/mvc_social_media_examples"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tgp_share_title"
            app:layout_constraintTop_toBottomOf="@id/tgp_share_title"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_chevron_right" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mvc_dimen_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/social_media_share_button" />

</androidx.constraintlayout.widget.ConstraintLayout>