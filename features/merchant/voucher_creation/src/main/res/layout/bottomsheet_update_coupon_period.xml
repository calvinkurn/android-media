<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCoupon"
        android:contentDescription="@string/image_coupon_content_description"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/img_mvc_cashback_khusus" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgCouponName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mvc_dimen_12dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/light_N700_96"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgCoupon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgCoupon"
        app:layout_constraintTop_toTopOf="@+id/imgCoupon"
        tools:text="Hura Hura Hujan Rejeki" />

    <View
        android:id="@+id/vMvcVerLine0"
        android:layout_width="0dp"
        android:layout_height="@dimen/mvc_dimen_1dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_N75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCoupon" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/textFieldStartDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/mvc_edit_period_margin_top"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vMvcVerLine0"
        app:text_field_append_drawable_icon_2="@drawable/ic_mvc_calendar"
        app:text_field_label="@string/start"
        tools:layout_height="@dimen/mvc_dimen_20dp" />

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/textFieldEndDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFieldStartDate"
        app:text_field_append_drawable_icon_2="@drawable/ic_mvc_calendar"
        app:text_field_label="@string/end"
        tools:layout_height="@dimen/mvc_dimen_20dp" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/mvc_save_changes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFieldEndDate"
        app:unifyButtonSize="medium" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="circular" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupContent"
        android:layout_width="wrap_content"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="imgCoupon,tpgCouponName,vMvcVerLine0,textFieldStartDate,textFieldEndDate,btnSave" />
</androidx.constraintlayout.widget.ConstraintLayout>