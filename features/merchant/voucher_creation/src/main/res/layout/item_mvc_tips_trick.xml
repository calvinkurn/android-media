<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcTipsTrickNumber"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/mvc_circle_white_border_grey"
        android:gravity="center"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="1" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcTipsTrickTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMvcTipsTrickNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sebarkan voucher toko di media sosial mu." />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcTipsTrickDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/light_N700_96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvMvcTipsTrickTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvMvcTipsTrickTitle"
        app:typographyType="body_3"
        tools:text="Sebarkan voucher toko di media sosial mu." />
</androidx.constraintlayout.widget.ConstraintLayout>