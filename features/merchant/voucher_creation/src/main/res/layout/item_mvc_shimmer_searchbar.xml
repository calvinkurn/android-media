<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mvcSearchBarContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:visibility="visible">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerMvc0"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerMvc1"
        android:layout_width="@dimen/mvc_dimen_100dp"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:layout_marginLeft="@dimen/spacing_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/mvc_dimen_12dp"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmerMvc0" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmerMvc2"
        android:layout_width="@dimen/mvc_dimen_100dp"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/shimmerMvc1"
        app:layout_constraintTop_toBottomOf="@+id/shimmerMvc0" />
</androidx.constraintlayout.widget.ConstraintLayout>