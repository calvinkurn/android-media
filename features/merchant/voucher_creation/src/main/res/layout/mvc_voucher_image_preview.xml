<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="150dp"
    tools:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bannerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/topLabel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/valueMiddle"
        app:layout_constraintEnd_toEndOf="@id/valueMiddle"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/middleLabel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/valueMiddle"
        app:layout_constraintEnd_toEndOf="@id/valueMiddle"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottomLabel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0.57"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/valueMiddle"
        app:layout_constraintEnd_toEndOf="@id/valueMiddle"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.27"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/valueMiddle"
        app:layout_constraintEnd_toEndOf="@id/valueMiddle">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/topValueAmount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_create_voucher_preview_value_size"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="20"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:text="@string/mvc_percent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_create_voucher_preview_scale_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toEndOf="@id/topValueAmount"
            tools:text="%"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middleValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/valueMiddle"
        app:layout_constraintEnd_toEndOf="@id/valueMiddle">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/middleValueAmount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_create_voucher_preview_value_size"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="20"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/middleValueScale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_create_voucher_preview_scale_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toEndOf="@id/middleValueAmount"
            tools:text="rb"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:text="@string/mvc_asterisk"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_create_voucher_preview_asterisk_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toEndOf="@id/middleValueScale"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.87"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/valueMiddle"
        app:layout_constraintEnd_toEndOf="@id/valueMiddle"
        tools:visibility="visible">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/bottomValueAmount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_create_voucher_preview_value_size"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="20"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/bottomValueScale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_create_voucher_preview_scale_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toEndOf="@id/bottomValueAmount"
            tools:text="rb"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/mvc_asterisk"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_create_voucher_preview_asterisk_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toEndOf="@id/bottomValueScale"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/bannerPromoName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/mvc_create_voucher_promo_name_size"
        android:lines="2"
        android:gravity="top"
        app:layout_constraintWidth_percent="0.27"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/promoNameGuide"
        app:layout_constraintVertical_bias="0.4"
        tools:text="Voucher gratis" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/valueMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.82"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/promoNameGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.42"/>

</androidx.constraintlayout.widget.ConstraintLayout>