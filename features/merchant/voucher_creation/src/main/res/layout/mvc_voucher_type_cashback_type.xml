<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/cashbackTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mvc_create_voucher_type_chips_title_margin_top"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:text="@string/mvc_create_promo_type_cashback_title_type"
        app:typographyType="body_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cashbackTypeRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/mvc_create_voucher_type_chips_margin_left"
        android:layout_marginStart="@dimen/mvc_create_voucher_type_chips_margin_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cashbackTypeTitle"
        tools:orientation="horizontal"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="2"
        tools:listitem="@layout/item_mvc_header_chip"/>

</androidx.constraintlayout.widget.ConstraintLayout>