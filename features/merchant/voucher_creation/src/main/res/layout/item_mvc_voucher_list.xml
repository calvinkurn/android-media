<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mvc_dimen_12dp"
    android:layout_marginLeft="@dimen/mvc_dimen_12dp"
    android:layout_marginTop="@dimen/spacing_lvl2"
    android:layout_marginEnd="@dimen/mvc_dimen_12dp"
    android:layout_marginRight="@dimen/mvc_dimen_12dp"
    android:layout_marginBottom="@dimen/spacing_lvl2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Neutral_N0"
        android:paddingStart="@dimen/layout_lvl0"
        android:paddingLeft="@dimen/layout_lvl0"
        android:paddingTop="@dimen/layout_lvl1"
        android:paddingEnd="@dimen/layout_lvl1"
        android:paddingRight="@dimen/layout_lvl1"
        android:paddingBottom="@dimen/layout_lvl1">

        <View
            android:id="@+id/viewMvcVoucherStatus"
            android:layout_width="@dimen/spacing_lvl2"
            android:layout_height="@dimen/mvc_dimen_20dp"
            android:background="@drawable/mvc_view_voucher_status_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMvcVoucherStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl0"
            android:layout_marginEnd="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl0"
            android:textColor="@color/light_G500"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_voucher_item_header_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/viewMvcVoucherStatus"
            app:layout_constraintEnd_toStartOf="@+id/tvMvcVoucherDuration"
            app:layout_constraintStart_toEndOf="@+id/viewMvcVoucherStatus"
            app:layout_constraintTop_toTopOf="@+id/viewMvcVoucherStatus"
            tools:text="Sedang Berlangsung" />

        <TextView
            android:id="@+id/tvMvcVoucherDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:textColor="@color/Neutral_N700_68"
            android:textStyle="bold"
            android:textSize="@dimen/mvc_voucher_item_header_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/tvMvcVoucherStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvMvcVoucherStatus"
            tools:text="17 Jan 2020 - 16 Feb 2020" />

        <ImageView
            android:id="@+id/imgMvcVoucherType"
            android:layout_width="@dimen/layout_lvl6"
            android:layout_height="@dimen/layout_lvl6"
            android:layout_marginTop="@dimen/mvc_dimen_12dp"
            app:layout_constraintStart_toEndOf="@+id/tvMvcVoucherStatus"
            app:layout_constraintStart_toStartOf="@+id/tvMvcVoucherStatus"
            app:layout_constraintTop_toBottomOf="@+id/tvMvcVoucherStatus"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvMvcVoucherName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mvc_dimen_12dp"
            android:layout_marginLeft="@dimen/mvc_dimen_12dp"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgMvcVoucherType"
            app:layout_constraintTop_toTopOf="@+id/imgMvcVoucherType"
            app:typographyType="heading_5"
            tools:text="Hura Hura Hujan Rejeki" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvMvcVoucherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintStart_toStartOf="@+id/tvMvcVoucherName"
            app:layout_constraintTop_toBottomOf="@+id/tvMvcVoucherName"
            app:typographyType="body_3"
            tools:text="Cashback 10%" />

        <View
            android:id="@+id/viewMvcVoucherCodeBg"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/voucher_creation_progressbar_padding_top"
            android:layout_marginEnd="@dimen/spacing_lvl2"
            android:layout_marginRight="@dimen/spacing_lvl2"
            android:background="@drawable/mvc_rectangle_grey_f8fafc_radius_4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvMvcVoucherName"
            app:layout_constraintTop_toBottomOf="@+id/tvMvcVoucherDescription" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvLblCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mvc_lbl_promo_code"
            android:textColor="@color/light_N700_96"
            app:layout_constraintBottom_toBottomOf="@+id/viewMvcVoucherCodeBg"
            app:layout_constraintEnd_toStartOf="@+id/tvVoucherCode"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/viewMvcVoucherCodeBg"
            app:layout_constraintTop_toTopOf="@+id/viewMvcVoucherCodeBg"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvVoucherCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_N700_96"
            app:layout_constraintBottom_toBottomOf="@+id/viewMvcVoucherCodeBg"
            app:layout_constraintEnd_toEndOf="@+id/viewMvcVoucherCodeBg"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvLblCode"
            app:layout_constraintTop_toTopOf="@+id/viewMvcVoucherCodeBg"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text=" LALAYEYE2020" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvLblUsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl1"
            android:text="@string/mvc_used"
            android:textColor="@color/light_N700_96"
            app:layout_constraintBottom_toTopOf="@+id/tvMvcVoucherUsed"
            app:layout_constraintEnd_toStartOf="@+id/btnMvcVoucherCta"
            app:layout_constraintStart_toStartOf="@+id/tvMvcVoucherName"
            app:layout_constraintTop_toTopOf="@+id/btnMvcVoucherCta"
            app:typographyType="small" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tvMvcVoucherUsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl1"
            android:textColor="@color/Neutral_N700_96"
            app:layout_constraintBottom_toBottomOf="@+id/btnMvcVoucherCta"
            app:layout_constraintEnd_toStartOf="@+id/btnMvcVoucherCta"
            app:layout_constraintStart_toStartOf="@+id/tvMvcVoucherName"
            app:layout_constraintTop_toBottomOf="@+id/tvLblUsed"
            app:typographyType="body_3"
            tools:text="50/100" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnMvcVoucherCta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mvc_dimen_12dp"
            android:layout_marginEnd="@dimen/layout_lvl1"
            android:layout_marginRight="@dimen/layout_lvl1"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:gravity="center"
            android:minWidth="100dp"
            android:text="@string/mvc_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnMvcMore"
            app:layout_constraintTop_toBottomOf="@+id/viewMvcVoucherCodeBg"
            app:unifyButtonSize="small" />

        <ImageView
            android:id="@+id/btnMvcMore"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl4"
            android:background="@drawable/mvc_rectangle_white_radius_4dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/btnMvcVoucherCta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnMvcVoucherCta"
            app:srcCompat="@drawable/ic_mvc_more" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>