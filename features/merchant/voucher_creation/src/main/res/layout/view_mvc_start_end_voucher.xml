<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcViewStartDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="17 Jan 2020"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcViewStartHour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="08:30 WIB"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="@+id/tvMvcViewStartDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMvcViewStartDate"
        app:typographyType="body_3" />

    <View
        android:id="@+id/viewMvcDash"
        android:layout_width="@dimen/mvc_dimen_10dp"
        android:layout_height="@dimen/mvc_dimen_1dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@color/Neutral_N700_96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMvcViewStartDate"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcViewEndDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="16 Feb 2020"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewMvcDash"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcViewEndHour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="08:30 WIB"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvMvcViewEndDate"
        app:layout_constraintTop_toBottomOf="@+id/tvMvcViewEndDate"
        app:typographyType="body_3" />
</androidx.constraintlayout.widget.ConstraintLayout>