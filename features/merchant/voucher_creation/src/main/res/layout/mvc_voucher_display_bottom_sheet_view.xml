<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/voucherDisplayRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/mvc_voucher_display_view"/>

    <com.tokopedia.unifycomponents.PageControl
        android:id="@+id/voucherDisplayPageControl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mvc_create_voucher_display_page_control_height"
        android:gravity="center"
        app:indicator_color="DEFAULT"
        app:indicator_type="CIRCLE"
        app:layout_constraintTop_toBottomOf="@id/voucherDisplayRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="@integer/mvc_create_voucher_display_page_control_vertical_bias"/>

</androidx.constraintlayout.widget.ConstraintLayout>