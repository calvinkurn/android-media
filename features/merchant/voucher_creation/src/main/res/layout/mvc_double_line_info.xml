<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/mvc_double_line_info_padding_vertical"
    android:paddingBottom="@dimen/mvc_double_line_info_padding_vertical"
    android:paddingStart="@dimen/mvc_double_line_info_padding_horizontal"
    android:paddingLeft="@dimen/mvc_double_line_info_padding_horizontal"
    android:paddingEnd="@dimen/mvc_double_line_info_padding_horizontal"
    android:paddingRight="@dimen/mvc_double_line_info_padding_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/infoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:maxLines="1"
        app:typographyType="body_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/infoValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:maxLines="1"
        app:typographyType="body_1"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/infoTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>