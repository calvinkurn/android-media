<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mvc_dimen_140dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailInfoTitleShimmer"
        android:layout_width="@dimen/mvc_detail_shimmer_small_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detailInfoItemShimmer1"
        app:layout_constraintStart_toStartOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailInfoItemShimmer1"
        android:layout_width="@dimen/mvc_detail_shimmer_long_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        app:layout_constraintTop_toBottomOf="@id/detailInfoTitleShimmer"
        app:layout_constraintBottom_toTopOf="@id/detailInfoItemShimmer2"
        app:layout_constraintStart_toStartOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailInfoItemShimmer2"
        android:layout_width="@dimen/mvc_detail_shimmer_long_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        app:layout_constraintTop_toBottomOf="@id/detailInfoItemShimmer1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailInfoValueShimmer1"
        android:layout_width="@dimen/mvc_detail_shimmer_extra_long_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        app:layout_constraintTop_toTopOf="@id/detailInfoItemShimmer1"
        app:layout_constraintBottom_toBottomOf="@id/detailInfoItemShimmer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailInfoValueShimmer2"
        android:layout_width="@dimen/mvc_detail_shimmer_extra_long_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        app:layout_constraintTop_toTopOf="@id/detailInfoItemShimmer2"
        app:layout_constraintBottom_toBottomOf="@id/detailInfoItemShimmer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

</androidx.constraintlayout.widget.ConstraintLayout>