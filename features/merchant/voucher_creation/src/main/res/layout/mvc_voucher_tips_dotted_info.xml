<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mvc_create_voucher_tips_dot_margin_left"
    android:layout_marginLeft="@dimen/mvc_create_voucher_tips_dot_margin_left"
    android:layout_marginEnd="@dimen/mvc_create_margin_padding"
    android:layout_marginRight="@dimen/mvc_create_margin_padding"
    android:layout_marginBottom="@dimen/mvc_create_voucher_tips_dot_margin_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/voucherTipsDot"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mvc_create_voucher_tips_dot_height"
        android:paddingStart="@dimen/mvc_create_voucher_tips_dot_padding_horizontal"
        android:paddingLeft="@dimen/mvc_create_voucher_tips_dot_padding_horizontal"
        android:paddingEnd="@dimen/mvc_create_voucher_tips_dot_padding_horizontal"
        android:paddingRight="@dimen/mvc_create_voucher_tips_dot_padding_horizontal"
        app:srcCompat="@drawable/mvc_dot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/voucherTipsDotDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/mvc_text_color_black"
        android:textSize="@dimen/mvc_create_voucher_tips_dot_desc_size"
        app:layout_constraintStart_toEndOf="@id/voucherTipsDot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/voucherTipsDot"/>

</androidx.constraintlayout.widget.ConstraintLayout>