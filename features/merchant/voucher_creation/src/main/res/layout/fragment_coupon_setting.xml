<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.create.view.fragment.CouponSettingFragment">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/headerUnify"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:unify_header_title="@string/coupon_setting"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@id/divider"
        android:layout_below="@id/headerUnify"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_16">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/typography"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl2"
                android:text="@string/coupon_type"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_5" />

            <com.tokopedia.unifycomponents.ChipsUnify
                android:id="@+id/chipCashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_4"
                app:centerText="true"
                app:chipSize="medium"
                app:chipText="@string/mvc_cashback"
                app:chipType="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/typography" />

            <com.tokopedia.unifycomponents.ChipsUnify
                android:id="@+id/chipFreeShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_4"
                app:centerText="true"
                app:chipSize="medium"
                android:layout_marginStart="@dimen/unify_space_8"
                app:chipText="@string/mvc_free_shipping"
                app:chipType="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/chipCashback"
                app:layout_constraintTop_toBottomOf="@id/typography" />

            <com.tokopedia.unifycomponents.TextAreaUnify
                android:id="@id/txtQuota"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:unify_text_field_message="message"
                app:text_area_label="@string/quota"
                android:layout_marginTop="@dimen/unify_space_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chipCashback" />

            <RelativeLayout
                android:id="@+id/layoutExpenseEstimation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unify_space_32"
                android:padding="@dimen/unify_space_12"
                android:background="@drawable/mvc_rectangle_grey_f8fafc_radius_4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtQuota">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/maximum_expense_estimation"
                    android:textColor="@color/Neutral_N700_96"
                    app:typographyType="heading_6" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/unify_space_4"
                    android:layout_toEndOf="@id/typography20"
                    android:contentDescription="@string/maximum_expense_estimation"
                    android:src="@drawable/ic_info_outline"/>

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/typography30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/typography20"
                    android:layout_marginTop="@dimen/unify_space_2"
                    android:text="@string/expense_description"
                    android:textColor="@color/Neutral_N700_96"
                    app:typographyType="body_3" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/tpg_expense_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/typography20"
                    android:layout_alignTop="@id/typography20"
                    android:layout_alignBottom="@id/typography30"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/unify_space_2"
                    android:gravity="center"
                    android:text="@string/hyphen"
                    android:textColor="@color/Neutral_N700_96"
                    app:typographyType="heading_5"
                    tools:text="Rp 20.000" />



            </RelativeLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tpgDiscountType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl2"
                android:text="@string/coupon_discount_type"
                android:textColor="@color/Neutral_N700_96"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_5"
                android:visibility="gone"/>

            <com.tokopedia.unifycomponents.ChipsUnify
                android:id="@+id/chipDiscountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:centerText="true"
                app:chipSize="medium"
                app:chipText="@string/mvc_vps"
                app:chipType="normal"
                android:visibility="gone"
                android:layout_marginTop="@dimen/unify_space_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/typography" />

            <com.tokopedia.unifycomponents.TextFieldUnify2
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:unify_text_field_label="@string/quota"
                android:layout_marginStart="@dimen/unify_space_16"
                android:layout_marginEnd="@dimen/unify_space_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />






        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/unify_space_8"
        android:layout_marginTop="@dimen/spacing_lvl5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_above="@id/cardView" />

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/unify_space_16"
        android:paddingTop="@dimen/unify_space_12"
        android:paddingEnd="@dimen/unify_space_16"
        android:paddingBottom="@dimen/unify_space_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:card_type="clear"
        app:layout_constraintStart_toStartOf="parent">

        <com.tokopedia.unifycomponents.UnifyButton
            android:layout_width="match_parent"
            app:unifyButtonSize="medium"
            android:layout_marginStart="@dimen/unify_space_16"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:text="@string/label_save"
            android:layout_height="wrap_content" />

    </com.tokopedia.unifycomponents.CardUnify>

</RelativeLayout>