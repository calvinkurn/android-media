<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mvc_promo_code_bg"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="@dimen/mvc_create_promo_code_info_padding_vertical"
    android:paddingBottom="@dimen/mvc_create_promo_code_info_padding_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/createPromoCodeInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mvc_create_promo_code_message_letter_number"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/createPromoCodeInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mvc_create_promo_code_message_no_tokopedia_alias"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="body_3"
        app:layout_constraintTop_toBottomOf="@id/createPromoCodeInfo1"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>