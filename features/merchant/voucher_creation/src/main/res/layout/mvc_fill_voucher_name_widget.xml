<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/fillVoucherNameDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mvc_create_divider_thick_height"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.vouchercreation.create.view.customview.VoucherCreateTitleView
        android:id="@+id/fillVoucherNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:title="@string/mvc_create_voucher_name_widget_title"
        app:layout_constraintTop_toBottomOf="@id/fillVoucherNameDivider"/>

    <com.tokopedia.unifycomponents.TextFieldUnify
        android:id="@+id/fillVoucherNameTextfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mvc_create_widget_margin"
        android:layout_marginEnd="@dimen/mvc_create_widget_margin"
        android:layout_marginBottom="@dimen/mvc_create_fill_voucher_name_margin_bottom"
        app:layout_constraintTop_toBottomOf="@id/fillVoucherNameTitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>