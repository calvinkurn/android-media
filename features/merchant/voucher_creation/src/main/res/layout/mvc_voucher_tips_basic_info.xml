<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/mvc_create_margin_padding"
    android:layout_marginLeft="@dimen/mvc_create_margin_padding"
    android:layout_marginEnd="@dimen/mvc_create_margin_padding"
    android:layout_marginRight="@dimen/mvc_create_margin_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherTipsBasicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mvc_text_color_black"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/voucherTipsBasicTitle"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherTipsBasicDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mvc_text_color_black"
        android:layout_marginTop="@dimen/mvc_create_voucher_tips_basic_desc_margin_top"
        android:layout_marginBottom="@dimen/mvc_create_voucher_tips_basic_desc_margin_bottom"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voucherTipsBasicTitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>