<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMcvFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnMvcApplyFilter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="2"
        tools:listitem="@layout/item_mvc_filter" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_voucher_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        android:text="@string/mvc_type_of_voucher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_4" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chip_cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_cashback"
        app:chipType="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tpg_voucher_type" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chip_free_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_free_shipping"
        app:chipType="normal"
        app:layout_constraintLeft_toRightOf="@id/chip_cashback"
        app:layout_constraintTop_toBottomOf="@id/tpg_voucher_type" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_voucher_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/mvc_dimen_35dp"
        android:text="@string/mvc_voucher_target"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_cashback"
        app:typographyType="heading_4" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chip_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_public"
        app:chipType="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tpg_voucher_target" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chip_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_special"
        app:chipType="normal"
        app:layout_constraintLeft_toRightOf="@id/chip_public"
        app:layout_constraintTop_toBottomOf="@id/tpg_voucher_target" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_voucher_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/mvc_dimen_35dp"
        android:text="@string/mvc_voucher_source"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_public"
        app:typographyType="heading_4" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chip_seller_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_seller_created"
        app:chipType="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tpg_voucher_source" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chip_subsidy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_subsidy"
        app:chipType="normal"
        app:layout_constraintLeft_toRightOf="@id/chip_seller_created"
        app:layout_constraintTop_toBottomOf="@id/tpg_voucher_source" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chip_vps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_vps"
        app:chipType="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_seller_created" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnMvcApplyFilter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/mvc_apply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_vps" />
</androidx.constraintlayout.widget.ConstraintLayout>