<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="@dimen/mvc_dimen_12dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="@dimen/mvc_dimen_12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icMvcTips"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMvcTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMvcTips"
        app:srcCompat="@drawable/ic_mvc_tips_yellow" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mvc_dimen_10dp"
        android:layout_marginLeft="@dimen/mvc_dimen_10dp"
        android:textColor="@color/light_N700_96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icMvcTips"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="@string/mvc_you_only_can_add_voucher_quota_as_long_voucher_is_live" />
</androidx.constraintlayout.widget.ConstraintLayout>