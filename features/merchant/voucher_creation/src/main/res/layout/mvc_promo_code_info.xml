<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mvc_promo_code_bg"
    android:paddingTop="@dimen/mvc_create_promo_code_padding_vertical"
    android:paddingBottom="@dimen/mvc_create_promo_code_padding_vertical"
    android:paddingStart="@dimen/mvc_create_promo_code_padding_horizontal"
    android:paddingEnd="@dimen/mvc_create_promo_code_padding_horizontal">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherCreatePromoCodeKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mvc_create_promo_code_key"
        android:textColor="@color/mvc_text_color_black"
        app:typographyType="body_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherCreatePromoCodeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mvc_text_color_black"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        app:layout_constraintStart_toEndOf="@id/voucherCreatePromoCodeKey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/voucherCreatePromoCodeChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mvc_create_promo_code_change"
        android:textColor="@color/mvc_text_color_grey"
        app:typographyType="body_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>