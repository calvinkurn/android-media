<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="@dimen/layout_lvl2">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcLblQuota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mvc_used_voucher"
        android:textColor="@color/Neutral_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifycomponents.ProgressBarUnify
        android:id="@+id/progressMvcUsage"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/mvc_dimen_12dp"
        android:layout_marginRight="@dimen/mvc_dimen_12dp"
        app:layout_constraintEnd_toStartOf="@+id/tvMvcUsedQuota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMvcLblQuota" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcUsedQuota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintBottom_toBottomOf="@+id/progressMvcUsage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvMvcTotalQuota"
        app:layout_constraintTop_toTopOf="@+id/progressMvcUsage"
        app:layout_constraintVertical_bias="0.6"
        app:typographyType="heading_3"
        tools:text="30" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcTotalQuota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintBottom_toBottomOf="@+id/tvMvcUsedQuota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvMvcUsedQuota"
        app:layout_constraintVertical_bias="0.8"
        app:typographyType="body_3"
        tools:text="/120" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcTickerUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@drawable/mvc_rectangle_grey_f8fafc_radius_4dp"
        android:padding="@dimen/mvc_dimen_10dp"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressMvcUsage"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcSpendingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl3"
        android:layout_marginRight="@dimen/layout_lvl3"
        android:text="@string/mvc_spending_so_far"
        android:textColor="@color/Neutral_N700_68"
        android:visibility="gone"
        app:typographyType="body_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvMvcTickerUsage"
        app:layout_constraintTop_toBottomOf="@+id/tvMvcTickerUsage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mvcImgInfo"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:background="@android:color/transparent"
        android:padding="@dimen/mvc_dimen_6dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tvMvcSpendingInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvMvcSpendingInfo"
        app:layout_constraintTop_toTopOf="@+id/tvMvcSpendingInfo"
        app:srcCompat="@drawable/ic_mvc_info"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvMvcSpending"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:textColor="@color/Neutral_N700_96"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvMvcSpendingInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvMvcSpendingInfo"
        app:typographyType="heading_4"
        tools:text="Rp2.000.000" />
</androidx.constraintlayout.widget.ConstraintLayout>