<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content"
    tools:context=".product.create.view.fragment.CouponSettingFragment">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/typography"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chipTypeFreeShipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_free_shipping"
        app:chipType="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/typography" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chipTypeCashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_cashback"
        app:chipType="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/chipTypeFreeShipping"
        app:layout_constraintTop_toBottomOf="@id/typography" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgDiscountType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/target"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipTypeFreeShipping"
        app:typographyType="body_2" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chipTargetPublic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_public"
        app:chipType="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tpgDiscountType" />

    <com.tokopedia.unifycomponents.ChipsUnify
        android:id="@+id/chipTargetPrivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:centerText="true"
        app:chipSize="medium"
        app:chipText="@string/mvc_special"
        app:chipType="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/chipTargetPublic"
        app:layout_constraintTop_toBottomOf="@id/tpgDiscountType" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mvc_apply"
        android:visibility="gone"
        app:unifyButtonSize="medium"
        tools:visibility="visible"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/chipTargetPrivate"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>