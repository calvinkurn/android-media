<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/parentMvcCarousel"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgMvcVoucherCarousel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_lvl2"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvMvcVoucherCarousel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mvc_dimen_12dp"
        android:gravity="center"
        android:textColor="@color/light_N700_96"
        android:textSize="@dimen/fontSize_lvl3"
        android:textStyle="bold"
        tools:text="Download Voucher" />
</LinearLayout>