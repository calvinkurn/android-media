<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailImageShimmer"
        android:layout_width="@dimen/mvc_dimen_100dp"
        android:layout_height="@dimen/mvc_dimen_100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailTitleShimmer"
        android:layout_width="@dimen/mvc_detail_shimmer_long_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        android:layout_marginStart="@dimen/mvc_dimen_20dp"
        android:layout_marginLeft="@dimen/mvc_dimen_20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/detailImageShimmer"
        app:layout_constraintTop_toTopOf="@+id/detailImageShimmer"
        app:layout_constraintBottom_toTopOf="@id/detailStartDateShimmer"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailStartDateShimmer"
        android:layout_width="@dimen/mvc_detail_shimmer_medium_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        android:layout_marginStart="@dimen/mvc_dimen_20dp"
        android:layout_marginLeft="@dimen/mvc_dimen_20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/detailImageShimmer"
        app:layout_constraintTop_toBottomOf="@id/detailTitleShimmer"
        app:layout_constraintBottom_toTopOf="@id/detailStartHourShimmer"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailStartHourShimmer"
        android:layout_width="@dimen/mvc_detail_shimmer_tiny_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        android:layout_marginStart="@dimen/mvc_dimen_20dp"
        android:layout_marginLeft="@dimen/mvc_dimen_20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/detailImageShimmer"
        app:layout_constraintTop_toBottomOf="@id/detailStartDateShimmer"
        app:layout_constraintBottom_toBottomOf="@id/detailImageShimmer"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>


    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailEndShimmer"
        android:layout_width="@dimen/mvc_detail_shimmer_medium_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/detailTitleShimmer"
        app:layout_constraintTop_toBottomOf="@id/detailTitleShimmer"
        app:layout_constraintBottom_toTopOf="@id/detailStartHourShimmer"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/detailEndHourShimmer"
        android:layout_width="@dimen/mvc_detail_shimmer_tiny_width"
        android:layout_height="@dimen/mvc_dimen_14dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/detailTitleShimmer"
        app:layout_constraintTop_toBottomOf="@id/detailStartDateShimmer"
        app:layout_constraintBottom_toBottomOf="@id/detailImageShimmer"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"/>

</androidx.constraintlayout.widget.ConstraintLayout>