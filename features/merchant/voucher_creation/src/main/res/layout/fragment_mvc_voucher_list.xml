<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Neutral_N0">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarMvc"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:elevation="@dimen/layout_lvl0"
        app:elevation="@dimen/layout_lvl0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Neutral_N0">

            <com.tokopedia.header.HeaderUnify
                android:id="@+id/toolbarMvcList"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:theme="?toolbarTheme"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:subtitleTextAppearance="?subtitleTextAppearance"
                app:titleTextAppearance="?titleTextAppearance"
                app:unify_header_is_show_shadow="false" />

            <com.tokopedia.design.text.SearchInputView
                android:id="@+id/searchBarMvc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl1"
                android:layout_marginLeft="@dimen/layout_lvl1"
                android:layout_marginEnd="@dimen/layout_lvl1"
                android:layout_marginRight="@dimen/layout_lvl1"
                android:clickable="true"
                android:focusable="true"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/fontSize_lvl2"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarMvcList"
                app:layout_scrollFlags="scroll|snap"
                app:siv_search_icon="@drawable/unify_search_ic"
                tools:visibility="visible" />

            <com.tokopedia.vouchercreation.voucherlist.view.widget.headerchips.HeaderChipsView
                android:id="@+id/headerChipMvc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl1"
                android:layout_marginBottom="@dimen/layout_lvl1"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchBarMvc"
                tools:listitem="@layout/item_mvc_header_chip"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeMvcList"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarMvc">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVoucherList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_mvc_voucher_list" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>