<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewBackConfirmTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mvc_review_change_confirmation_title"
        android:textColor="@color/Neutral_N700_96"
        app:typographyType="heading_2"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewBackConfirmDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:text="@string/mvc_review_change_confirmation_detail"
        android:textColor="@color/Neutral_N700_68"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/reviewBackConfirmTitle"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/reviewBackConfirmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:text="@string/mvc_back"
        app:unifyButtonSize="medium"
        app:layout_constraintTop_toBottomOf="@id/reviewBackConfirmDesc"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewBackCancelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginBottom="@dimen/layout_lvl3"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/reviewBackConfirmButton"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/mvc_review_back_redirect" />

</androidx.constraintlayout.widget.ConstraintLayout>