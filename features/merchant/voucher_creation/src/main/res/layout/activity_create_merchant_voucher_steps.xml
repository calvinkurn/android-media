<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/createMerchantVoucherHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:unify_header_title="@string/create_voucher_title"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_header_is_show_shadow="false"/>

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/stepper_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        app:layout_constraintTop_toBottomOf="@id/createMerchantVoucherHeader"
        app:rcBackgroundColor="@color/transparent"
        app:rcMax="100"
        app:rcProgressColor="@color/tkpd_main_green"
        app:rcRadius="0dp" />

    <FrameLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/stepper_progress"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>