<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/progressBarFrame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mvc_create_progressbar_height"
        app:layout_constraintTop_toBottomOf="@id/createMerchantVoucherHeader">

        <ProgressBar
            android:id="@+id/createMerchantVoucherProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:theme="@style/progressBarGreen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mvc_create_progressbar_height"
            android:max="@integer/progress_bar_max_value"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/createMerchantVoucherHeader"
            app:layout_constraintBottom_toBottomOf="@id/createMerchantVoucherHeader"/>
    </FrameLayout>

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/createMerchantVoucherHeader"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:unify_header_title="@string/create_voucher_title"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_header_is_show_shadow="false"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/createMerchantVoucherViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progressBarFrame"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>