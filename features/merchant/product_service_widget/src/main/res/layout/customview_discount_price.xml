<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/layout_discount_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        app:typographyWeight="bold"
        app:typographyType="body_2"
        tool:text="Rp36.000" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/label_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:labelType="general_light_red"
        tool:labelTitle="30%" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_slash_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/Unify_NN950_44"
        app:typographyType="body_2"
        tool:text="Rp36.000" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_layout_discount_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_price,label_discount,tv_slash_price"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="4dp"
        app:flow_verticalBias="0"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>