<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_title1"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/loader_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_title2"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="128dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_image"
        app:layout_constraintTop_toBottomOf="@+id/loader_title1" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_title3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:loader_corner_radius="12dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_image"
        app:layout_constraintTop_toBottomOf="@+id/loader_title2" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_title4"
        android:layout_width="96dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/loader_image"
        app:layout_constraintTop_toBottomOf="@+id/loader_title3" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_title5"
        android:layout_width="96dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toEndOf="@+id/loader_title4"
        app:layout_constraintTop_toBottomOf="@+id/loader_title3" />

</androidx.constraintlayout.widget.ConstraintLayout>