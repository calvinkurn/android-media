<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tf_widget_title"
        android:textColor="@color/Unify_NN950"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_addons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/div_see_all"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:background="@color/Unify_NN50"
        android:layout_height="2dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_see_all"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:text="@string/action_see_all"
            android:textColor="@color/Unify_GN500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.tokopedia.iconunify.IconUnify
            app:icon_name="CHEVRON_DOWN"
            app:icon_color_light_enable="@color/Unify_GN500"
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>