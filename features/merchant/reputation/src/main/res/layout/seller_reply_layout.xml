<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seller_reply_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone"
    tools:visibility="visible">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/see_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/reply_chevron"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/chevron_down"
            android:visibility="invisible"
            tools:visibility="visible"/>


        <TextView
            android:id="@+id/see_reply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/reply_chevron"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:padding="@dimen/dp_10"
            android:text="@string/see_reply"
            style="@style/TextView.Small.BlackDisabled.Bold"
            android:visibility="invisible"
            tools:visibility="visible"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_300"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reply_review_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/see_reply_layout"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/reply_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_5"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"/>

        <TextView
            android:id="@+id/seller_reply_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="7sp"
            style="@style/TextView.Small"
            tools:text="Oleh Pretty Sugar Shop"
            />

        <TextView
            android:id="@+id/seller_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_reply_name"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/label_seller"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="0sp"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:text="@string/seller"
            android:textColor="@color/tkpd_main_green"
            style="@style/TextView.Micro.Bold"
            android:textStyle="normal"
            />


        <TextView
            android:id="@+id/seller_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_reply_name"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/seller_label"
            android:lineSpacingExtra="4sp"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            style="@style/TextView.Micro.BlackDisabled"
            tools:text="31 Jul 2016, pukul 11:48"
            />

        <TextView
            android:id="@+id/seller_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_label"
            android:layout_marginRight="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_6"
            android:lineSpacingExtra="8sp"
            android:enabled="true"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true"
            android:textSize="@dimen/sp_12"
            android:fontFamily="sans-serif"
            tools:text="Terima kasih sudah mempercayai toko kami. Silahkan melihat-lihat produk” lainnya yang tersedia di toko kami."
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_300"/>
</RelativeLayout>