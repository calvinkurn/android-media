<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/seller_reply_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone"
    tools:visibility="visible">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/see_reply_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/reply_chevron"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            app:srcCompat="@drawable/chevron_down"
            android:visibility="invisible"
            tools:visibility="visible"/>


        <TextView
            android:id="@+id/see_reply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/reply_chevron"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:padding="@dimen/dp_10"
            android:text="@string/see_reply"
            android:textColor="@color/black_38"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="invisible"
            tools:visibility="visible"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_300"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reply_review_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/see_reply_layout"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/reply_overflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_5"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"/>

        <TextView
            android:id="@+id/seller_reply_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="7sp"
            android:textColor="@color/black_54"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Oleh Pretty Sugar Shop"
            />

        <TextView
            android:id="@+id/seller_label"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_reply_name"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/label_seller"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="0sp"
            android:padding="2dp"
            android:text="@string/seller"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="normal"
            />


        <TextView
            android:id="@+id/seller_reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_reply_name"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/seller_label"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/black_38"
            android:textSize="@dimen/text_size_xsmall"

            tools:text="31 Jul 2016, pukul 11:48"
            />

        <TextView
            android:id="@+id/seller_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seller_label"
            android:layout_marginRight="36dp"
            android:layout_marginTop="@dimen/dp_5"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            android:enabled="true"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true"
            android:textStyle="normal"
            tools:text="Terima kasih sudah mempercayai toko kami. Silahkan melihat-lihat produkâ€ lainnya yang tersedia di toko kami."
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_300"/>
</RelativeLayout>