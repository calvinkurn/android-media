<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3">

    <View
        android:id="@+id/bullet"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="7dp"
        android:background="@drawable/reputation_green_notification_circle"/>

    <TextView
        android:id="@+id/title"
        style="@style/TextView.Small"
        android:layout_toRightOf="@+id/bullet"
        android:layout_toEndOf="@+id/bullet"
        android:lineSpacingExtra="7sp"
        tools:text="Kesesuaian dengan deskripsi" />

    <TextView
        android:id="@+id/tips"
        style="@style/TextView.Small.BlackDisabled"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/dp_3"
        android:lineSpacingExtra="7sp"
        tools:text="“Ukuran dan warna sesuai dengan foto dan deskripsi produk yang dijual”" />

</RelativeLayout>