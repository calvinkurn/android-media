<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding_activity">

    <View
        android:id="@+id/bullet"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="7dp"
        android:background="@drawable/green_notification_circle"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bullet"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/black_70"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Kesesuaian dengan deskripsi"
        />

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/dp_5"
        android:fontFamily="sans-serif"

        android:lineSpacingExtra="7sp"
        android:textColor="#61000000"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="“Ukuran dan warna sesuai dengan foto dan deskripsi produk yang dijual”"
        />

</RelativeLayout>