<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/helpful_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:visibility="gone"
    tools:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/reply_chevron"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_sm"
        app:srcCompat="@drawable/chevron_down"
        android:visibility="invisible"
        tools:visibility="visible"/>


    <TextView
        android:id="@+id/see_reply_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/reply_chevron"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:padding="@dimen/padding_small"
        android:textColor="@color/black_38"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="invisible"
        android:text="@string/see_reply"
        tools:visibility="visible"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_300"/>
</RelativeLayout>