<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/header">

                    <ImageView
                        android:layout_width="@dimen/img_thumb_m"
                        android:layout_height="@dimen/img_thumb_m"
                        android:id="@+id/user_avatar"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        tools:src="@drawable/remove" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_overflow"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        tools:src="@drawable/ic_new_action_overflow_black"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/user_avatar"
                        android:layout_toLeftOf="@id/btn_overflow"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/username"
                            tools:text="Username"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/font_medium"
                            android:layout_marginBottom="@dimen/dp_5" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/username"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:id="@+id/counter_smiley">

                            <ImageView
                                android:id="@+id/rep_icon"
                                android:layout_width="@dimen/img_thumb_s"
                                android:layout_height="@dimen/img_thumb_s"
                                app:srcCompat="@drawable/ic_icon_repsis_smile_active"/>
                            <TextView
                                android:id="@+id/rep_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/fontvs"
                                tools:text="40%"
                                android:layout_marginLeft="@dimen/dp_5"
                                />

                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header"
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/comment"
                    tools:text="Comment Here\n\tComment Here\n\t\tComment There"
                    android:textSize="@dimen/sp_14"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/image_holder"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="@dimen/img_thumb_holder"
                    android:layout_below="@id/comment"
                    android:scrollbars="horizontal"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_below="@id/image_holder"
                    android:id="@+id/date"
                    tools:text="25 Maret 2015"
                    android:textColor="@color/time_color"
                    android:textSize="@dimen/fontvs" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/date"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:id="@+id/sep1"
                    android:background="@color/label_color"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/footer"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="@dimen/dp_20">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/grey_300"
                        android:id="@+id/top_separator"
                        android:layout_alignParentTop="true"
                        android:visibility="visible" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top_separator"
                        android:id="@+id/view_review_rating"
                        android:visibility="visible">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_prod_quality"
                                android:id="@+id/label_quality"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/sp_14"
                                android:paddingRight="@dimen/dp_10"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/dp_5" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/star_quality"
                                android:gravity="center"
                                tools:src="@drawable/ic_star_five"
                                android:layout_gravity="center_vertical"
                                android:paddingTop="@dimen/dp_5"
                                android:paddingBottom="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_5" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_300"
                            android:id="@+id/separator"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_accuracy"
                                android:id="@+id/label_accuracy"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/sp_14"
                                android:paddingRight="@dimen/dp_10"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/dp_5" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/star_accuracy"
                                android:gravity="center"
                                tools:src="@drawable/ic_star_five"
                                android:layout_gravity="center_vertical"
                                android:paddingTop="@dimen/dp_5"
                                android:paddingBottom="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_5" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/grey_300"
                        android:id="@+id/bottom_separator"
                        android:layout_below="@+id/view_review_rating"
                        android:visibility="visible" />
                </RelativeLayout>
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@shopId/sep1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:layout_gravity="center_vertical"
                        android:text="@string/title_prod_quality"
                        android:textSize="@dimen/sp_14"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        app:srcCompat="@drawable/ic_star_five"
                        android:shopId="@+shopId/star_quality"
                        android:layout_gravity="center"
                        android:scaleType="fitStart"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="@string/title_accuracy"
                        android:textSize="@dimen/sp_14"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".50"
                        app:srcCompat="@drawable/ic_star_five"
                        android:shopId="@+shopId/star_accuracy"
                        android:scaleType="fitEnd"/>

                </LinearLayout>-->

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/counter_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    tools:text="1"
                    android:textSize="@dimen/fontvs"
                    android:gravity="center_vertical" />

                <ImageView
                    android:layout_width="@dimen/img_thumb_s"
                    android:layout_height="@dimen/img_thumb_s"
                    app:srcCompat="@drawable/ic_menu_talk"
                    android:id="@+id/icon_comment"
                    android:layout_toRightOf="@+id/counter_comment"
                    android:layout_alignTop="@+id/counter_comment"
                    android:layout_alignBottom="@+id/counter_comment"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/view_like_dislike"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        app:srcCompat="@drawable/ic_icon_repsis_like"
                        android:id="@+id/icon_like"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/icon_like"
                        android:layout_alignBottom="@id/icon_like"
                        android:layout_toRightOf="@id/icon_like"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:id="@+id/counter_like"
                        android:text="1"
                        android:textSize="@dimen/fontvs"/>

                    <ImageView
                        android:layout_width="@dimen/img_thumb_s"
                        android:layout_height="@dimen/img_thumb_s"
                        android:layout_toRightOf="@id/counter_like"
                        app:srcCompat="@drawable/ic_icon_repsis_dislike"
                        android:id="@+id/icon_dislike"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/icon_dislike"
                        android:layout_alignBottom="@id/icon_dislike"
                        android:layout_toRightOf="@id/icon_dislike"
                        android:paddingLeft="@dimen/dp_5"
                        android:gravity="center_vertical"
                        android:id="@+id/counter_dislike"
                        android:text="1"
                        android:textSize="@dimen/fontvs"/>

                </RelativeLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loading"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <!-- Comment Area-->
            <RelativeLayout
                android:id="@+id/comment_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="@dimen/dp_10">

                <RelativeLayout
                    android:id="@+id/header_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/user_ava_comment"
                        android:layout_width="@dimen/img_thumb"
                        android:layout_height="@dimen/img_thumb"
                        tools:src="@drawable/remove" />

                    <ImageView
                        android:id="@+id/but_overflow_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/overflow_selected"
                        app:srcCompat="@drawable/ic_new_action_overflow_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/user_ava_comment"
                        android:layout_toLeftOf="@id/but_overflow_comment"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="username"
                            android:id="@+id/comment_username"
                            android:singleLine="true"
                            android:textSize="@dimen/sp_14"
                            android:ellipsize="end" />

                        <LinearLayout
                            android:id="@+id/badges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:orientation="horizontal">
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/message_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header_comment"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/user_ava"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/speechbubble"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:text="Isi messagenya"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fonts" />

                <TextView
                    android:id="@+id/create_time_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="12 Mei 2014"
                    android:textColor="@color/time_color"
                    android:textSize="@dimen/fontvs"
                    android:layout_alignLeft="@id/message_comment"
                    android:layout_alignStart="@id/message_comment"
                    android:layout_below="@id/message_comment" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>