<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_8"
    android:background="@color/white"
    android:orientation="vertical">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_img"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_15"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintBottom_toBottomOf="@+id/loader_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_img"
        app:layout_constraintTop_toTopOf="@+id/loader_img" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_img_main"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_28"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_img" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_star"
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_img_main" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_star_text"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_star" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_review_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_star_text" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_review_question_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering_small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_review_question"
        app:layout_constraintWidth_percent="0.5" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_review_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_16"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_review_question_2" />

</androidx.constraintlayout.widget.ConstraintLayout>