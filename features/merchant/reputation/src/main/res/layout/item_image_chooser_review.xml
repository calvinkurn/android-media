<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_picker_thumbnail_outer_width"
    android:layout_height="@dimen/image_picker_thumbnail_outer_width"
    android:layout_marginLeft="@dimen/dp_2"
    android:layout_marginRight="@dimen/dp_2"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/avatars"/>

    <FrameLayout
        android:id="@+id/review_container_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <View android:id="@+id/review_img_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_primary"
            android:alpha="0.7"
            tools:visibility="visible"/>

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/txt_other_img_overlay"
            android:layout_width="@dimen/dp_44"
            android:layout_height="wrap_content"
            android:text="@string/label_see_all"
            android:layout_gravity="center"
            android:gravity="center"
            tools:visibility="visible"
            app:weight="medium"
            app:fontSize="micro"
            app:textViewTheme="darkPrimary"/>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
