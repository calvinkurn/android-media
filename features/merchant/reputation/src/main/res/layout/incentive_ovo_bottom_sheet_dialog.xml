<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_incentive_ovo"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivIncentiveOvo"
            android:layout_width="@dimen/size_incentive_ovo_image"
            android:layout_height="@dimen/size_incentive_ovo_image"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/ic_smiley_bad" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgIncentiveOvoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mau Gratis OVO Points?"
            android:layout_gravity="center"
            app:typographyType="heading_2"
            app:typographyWeight="bold" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgIncentiveOvoSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/max_width_incentive_ovo_subtitle"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            app:typographyType="body_1"
            app:typographyWeight="reguler"
            tools:text="Sekarang, kasih rating dan ulasan bisa dapat OVO Points, lho!" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tgIncentiveOvoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/margin_top_incentive_ovo_description"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            tools:text="Baca Syarat" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvIncentiveOvoExplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginLeft="@dimen/layout_lvl2"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_marginRight="@dimen/layout_lvl2" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btnContinueReview"
            android:layout_marginTop="@dimen/layout_lvl2"
            style="@style/Button.Submit.Green"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/heading_6"
            tools:text="Lanjut Kirim Ulasan" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
