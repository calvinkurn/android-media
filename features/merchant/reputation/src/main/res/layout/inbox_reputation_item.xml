<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_6"
    app:cardPreventCornerOverlap="false"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardBackgroundColor="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TextView.Micro.BlackDisabled"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6sp"
                tools:text="28 Mei"
                />

            <TextView
                android:id="@+id/deadline_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:lineSpacingExtra="6sp"
                style="@style/TextView.Micro.BlackDisabled"
                android:text="@string/deadline_review"
                android:visibility="visible"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            >

            <TextView
                android:id="@+id/invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/TextView.Micro"
                tools:text="INV/20170116/XVII/65862137"
                />

            <ImageView
                android:id="@+id/unread_notif"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/invoice"
                app:srcCompat="@drawable/reputation_red_circle" />

            <TextView
                android:id="@+id/label_deadline"
                android:layout_width="@dimen/label_deadline_width"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                style="@style/TextView.Micro"
                android:textColor="@color/white"
                android:padding="@dimen/dp_3"
                android:visibility="visible"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="3 hari lagi"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/user_avatar"
                android:layout_height="@dimen/user_avatar"
                android:layout_marginRight="@dimen/dp_10"
                tools:src="@drawable/reputation_ic_done_24dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/avatar"
                style="@style/TextView.Small.Bold"
                tools:text="Pretty Sugar Shop"
                android:layout_toEndOf="@id/avatar"
                android:layout_alignTop="@+id/avatar"/>

            <com.tokopedia.design.reputation.UserReputationView
                android:id="@+id/user_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/avatar"
                android:layout_marginTop="@dimen/dp_4"/>

            <com.tokopedia.design.reputation.ShopReputationView
                android:id="@+id/shop_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/avatar"
                android:layout_marginTop="@dimen/dp_4"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_height"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/action"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="end|center_vertical"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                style="@style/TextView.Small.Green"
                tools:text="Beri Penilaian dan Balas Ulasan"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_16"
                app:srcCompat="@drawable/ic_chevron_right_green"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>