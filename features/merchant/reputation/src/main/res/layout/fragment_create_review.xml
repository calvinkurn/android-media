<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_review"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/img_app_share"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_animation_review"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_28"
            android:src="@drawable/img_app_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_review" />

        <RatingBar
            android:id="@+id/rating_bar_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:progressTint="@color/yellow_1"
            android:rating="5"
            android:secondaryProgressTint="@color/yellow_1"
            android:stepSize="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_animation_review" />


        <TextView
            android:id="@+id/txt_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Cerebria: The Inside World â€“ Origin Box (Kickstarter) Board game"
            app:layout_constraintBottom_toBottomOf="@+id/img_review"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_review"
            app:layout_constraintStart_toEndOf="@+id/img_review"
            app:layout_constraintTop_toTopOf="@+id/img_review" />

        <TextView
            android:id="@+id/rating_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_bar_review"
            tools:text="Very Bad" />

        <TextView
            android:id="@+id/txt_review_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="Hai [name], tuliskan hal yang tidak sesuai harapan dari barang ini?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_txt" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_input_review"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_review_desc">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_text_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Review"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:scrollbars="vertical" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_img_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_input_review" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/img_animation_review"
            app:layout_constraintRight_toRightOf="@+id/img_animation_review"
            app:layout_constraintTop_toTopOf="@+id/img_animation_review">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_star_1"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/lottie_anim_star_yellow"
                tools:src="@drawable/ic_stars_disable_xxl" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_star_2"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/lottie_anim_star_yellow"
                tools:src="@drawable/ic_stars_disable_xxl" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_star_3"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/lottie_anim_star_yellow"
                tools:src="@drawable/ic_stars_disable_xxl" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_star_4"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/lottie_anim_star_yellow"
                tools:src="@drawable/ic_stars_disable_xxl" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_star_5"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/lottie_anim_star_yellow"
                tools:src="@drawable/ic_stars_disable_xxl" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:orientation="horizontal">

            <com.tokopedia.unifycomponents.selectioncontrol.CheckboxUnify
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kirim sebagai K**a"/>

        </LinearLayout>

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/stepper_review"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            app:rcBackgroundColor="@color/black_12"
            app:rcMax="100"
            app:rcProgressColor="@color/tkpd_main_green"
            app:rcRadius="0dp" />

        <com.tokopedia.design.component.ButtonCompat
            style="@style/Button.Submit.Green.Full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_8"
            android:text="Kirim Ulasan" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>

