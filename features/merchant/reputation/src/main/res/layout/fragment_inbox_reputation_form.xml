<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity">

            <com.tokopedia.core.customView.RoundedCornerImageView
                android:id="@+id/product_avatar"
                android:layout_width="@dimen/product_avatar"
                android:layout_height="@dimen/product_avatar"
                android:layout_marginRight="@dimen/dp_8"/>

            <TextView
                android:id="@+id/product_name"
                style="@style/TextView.Micro"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="6sp"
                android:layout_gravity="center_vertical"
                tools:text="Yellow Rose Bomber Jacket Bordir - Not all roses are red" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@drawable/bg_line_separator"/>

        <TextView style="@style/TextView.Title.Bold"
            android:lineSpacingExtra="@dimen/sp_8"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8"
            android:text="@string/product_quality"/>

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:backgroundTint="@color/yellow_600"
            android:progressTint="@color/yellow_600"
            android:secondaryProgressTint="@android:color/transparent" />

        <TextView
            android:id="@+id/rating_text"
            style="@style/TextView.Micro.BlackSecondary"
            android:lineSpacingExtra="@dimen/line_spacing_6"
            android:text="@string/rating_title_0"
            android:paddingStart="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            tools:text="Beri Peringkat" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/expand_product_review_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_tips"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_8"
            android:paddingStart="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16">

            <ImageView
                android:id="@+id/icon_lightbulb"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_oval_with_bulb"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView style="@style/TextView.Micro"
                android:layout_width="0dp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="7sp"
                android:text="@string/review_tips"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                app:layout_constraintLeft_toRightOf="@+id/icon_lightbulb"
                app:layout_constraintStart_toEndOf="@+id/icon_lightbulb"
                app:layout_constraintTop_toTopOf="@+id/icon_lightbulb"
                app:layout_constraintBottom_toBottomOf="@+id/icon_lightbulb"
                app:layout_constraintRight_toLeftOf="@+id/iv_expand_collapse"
                app:layout_constraintEnd_toStartOf="@+id/iv_expand_collapse"/>

            <ImageView
                android:id="@id/iv_expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_dark_arrow_down"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/icon_lightbulb"
                app:layout_constraintBottom_toBottomOf="@+id/icon_lightbulb"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/review_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_tips"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_16"/>

        <com.tokopedia.design.text.TkpdHintTextInputLayout
            android:id="@+id/review_layout"
            style="@style/HintTextInputLayout"
            android:layout_marginTop="@dimen/dp_16"
            android:hint="@string/hint_review"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_16">

            <EditText
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_review_edittext"
                android:inputType="textMultiLine|textCapSentences"/>
        </com.tokopedia.design.text.TkpdHintTextInputLayout>

        <TextView style="@style/TextView.Micro.BlackSecondary"
            android:lineSpacingExtra="@dimen/line_spacing_6"
            android:text="@string/review_min_character"
            android:paddingLeft="@dimen/dp_16"
            android:paddingStart="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_activity">

            <TextView style="@style/TextView.Title.Bold"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_6"
                android:lineSpacingExtra="@dimen/sp_8"
                android:text="@string/upload_image"/>

            <ImageView
                android:id="@+id/upload_info"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/info_icon"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_image_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_upload"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding_activity"
            android:paddingLeft="@dimen/padding_activity"
            android:paddingRight="@dimen/padding_activity"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity">

            <TextView style="@style/TextView.Small"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:lineSpacingExtra="7sp"
                android:text="@string/share_to_facebook"/>

            <android.support.v7.widget.SwitchCompat
                style="@style/Switch"
                android:id="@+id/switch_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView style="@style/TextView.Small"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/anonym" />

                <TextView style="@style/TextView.Small.BlackDisabled"
                    android:id="@+id/info_anonymous"
                    android:lineSpacingExtra="7sp"
                    tools:text="@string/hint_anonym"/>
            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                style="@style/Switch"
                android:id="@+id/switch_anonym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/padding_activity"
            style="@style/Button.Submit.Green"
            android:text="@string/submit_review"/>
    </LinearLayout>

</ScrollView>