<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity">

            <com.tokopedia.core.customView.RoundedCornerImageView
                android:id="@+id/product_avatar"
                android:layout_width="@dimen/product_avatar"
                android:layout_height="@dimen/product_avatar"
                android:layout_marginRight="@dimen/dp_10"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/black_70"
                android:textSize="@dimen/fontvs"
                android:textStyle="normal"
                tools:text="Yellow Rose Bomber Jacket Bordir - Not all roses are red"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="7sp"
            android:padding="@dimen/padding_activity"
            android:text="@string/product_quality"
            android:textColor="@color/black_70"
            android:textSize="@dimen/fonts"
            android:textStyle="normal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/padding_activity"
            android:paddingRight="@dimen/padding_activity"
            android:paddingBottom="@dimen/padding_activity">

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:backgroundTint="@color/yellow_600"
                android:progressTint="@color/yellow_600"
                android:secondaryProgressTint="@android:color/transparent"
                />

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="7sp"
                android:text="@string/rating_title_0"
                android:textColor="@color/black_38"
                android:textSize="@dimen/fonts"
                android:textStyle="normal"
                tools:text="Beri Peringkat"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expand_product_review_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_bulb"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="7sp"
                android:text="@string/review_tips"
                android:textColor="@color/black_70"
                android:textSize="@dimen/fonts"
                android:textStyle="normal"
                />

            <ImageView
                android:id="@id/iv_expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_green_arrow_down"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/review_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.tokopedia.design.text.TkpdTextInputLayout
            android:id="@+id/review_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:hint="@string/hint_review"
            android:paddingLeft="@dimen/padding_activity"
            android:paddingRight="@dimen/padding_activity"
            android:paddingTop="@dimen/padding_activity">

            <EditText
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"/>
        </com.tokopedia.design.text.TkpdTextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="7sp"
                android:text="@string/upload_image"
                android:textColor="@color/black_70"
                android:textSize="@dimen/fonts"
                android:textStyle="normal"
                />

            <ImageView
                android:id="@+id/upload_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info_icon"/>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_image_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_image_upload"
            android:background="@color/white"
            android:paddingBottom="@dimen/padding_activity"
            android:paddingLeft="@dimen/padding_activity"
            android:paddingRight="@dimen/padding_activity"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:lineSpacingExtra="6sp"
                android:text="@string/share_to_facebook"
                android:textColor="@color/black_70"
                android:textSize="@dimen/fontm"
                />

            <Switch
                android:id="@+id/switch_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_activity"
            android:visibility="visible"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/anonym"
                    android:textColor="@color/black_70"
                    android:textSize="@dimen/fontm"
                    />

                <TextView
                    android:id="@+id/info_anonymous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5sp"
                    tools:text="@string/hint_anonym"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/text_size_xsmall"
                    android:textStyle="normal"
                    />
            </LinearLayout>

            <Switch
                android:id="@+id/switch_anonym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/padding_activity"
            android:background="@drawable/bg_button_disabled"
            android:enabled="false"
            android:text="@string/submit_review"
            android:textColor="@color/grey_700"/>
    </LinearLayout>

</ScrollView>