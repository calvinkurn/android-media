<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_activity">

    <ImageView
        android:id="@+id/upload_product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:src="@drawable/ic_smiley_good"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/upload_product_image"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="10sp"
        android:text="@string/upload_product_image"
        android:textColor="@color/black_54"
        android:textSize="@dimen/text_size_xlarge"
        android:textStyle="normal"
        />

    <TextView
        android:id="@+id/upload_product_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toLeftOf="@id/upload_product_image"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="7sp"
        android:text="@string/upload_product_info"
        android:textColor="@color/black_38"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        android:layout_marginBottom="@dimen/margin_small"
        />

    <Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upload_product_info"
        android:background="@color/medium_green"
        android:text="@string/close"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

</RelativeLayout>