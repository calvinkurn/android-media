query productRecommendationWidget($pageName: String, $pageNumber: Int, $xDevice: String, $xSource: String, $categoryIDs: String) {
      productRecommendationWidget(pageName: $pageName, pageNumber: $pageNumber, xDevice: $xDevice, xSource: $xSource, categoryIDs: $categoryIDs, os: true) {
        data {
          tID
          source
          title
          foreignTitle
          widgetUrl
          pagination {
            currentPage
            nextPage
            prevPage
            hasNext
          }
          recommendation {
            id
            name
            categoryBreadcrumbs
            url
            appUrl
            clickUrl
            wishlistUrl
            trackerImageUrl
            imageUrl
            freeOngkir {
              isActive
              imageUrl
            }
            price
            priceInt
            slashedPriceInt
            slashedPrice
            discountPercentage
            labelgroup {
                position
                title
                type
                url
            }
            shop {
              id
              name
              city
            }
            departmentId
            badges {
              imageUrl
            }
            rating
            countReview
            recommendationType
            stock
            isTopads
          }
        }
      }
    }