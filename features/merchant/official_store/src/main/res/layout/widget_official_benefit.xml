<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/spacing_lvl2"
    android:paddingRight="@dimen/spacing_lvl2"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingBottom="@dimen/spacing_lvl3"
    android:gravity="center"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/image_icon_benefit"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginRight="@dimen/spacing_lvl2"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:contentDescription="@string/content_desc_os_benefit"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_P600"
        android:textSize="@dimen/fontSize_lvl2"
        app:typographyType="heading_6"
        android:layout_gravity="center"/>

</LinearLayout>
