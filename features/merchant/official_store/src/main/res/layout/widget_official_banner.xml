<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/viewpager_banner_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/viewpager_banner_category"
        android:id="@+id/indicator_banner_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:orientation="horizontal" />


    <TextView
        android:layout_below="@+id/viewpager_banner_category"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/promo_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:text="@string/banner_see_all"
        android:textStyle="bold"
        android:textColor="@color/Purple_P600"
        android:textSize="@dimen/fontSize_lvl2" />


    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider"
        android:layout_below="@+id/promo_link"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:background="@color/Neutral_N75"
        android:layout_height="@dimen/layout_lvl1" />

</RelativeLayout>
