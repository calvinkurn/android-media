<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dc_sprintsale_item_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:contentPadding="0dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dc_sprintsale_item_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.design.image.SquareImageView
            android:id="@+id/dc_sprintsale_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/dc_sprintsale_item_disc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:labelType="general_light_red"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dc_sprintsale_item_old_price"
            app:layout_constraintTop_toBottomOf="@id/dc_sprintsale_item_image" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/dc_sprintsale_item_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/Neutral_N700_44"
            android:maxLines="1"
            app:typographyType="heading_6"
            app:layout_constraintStart_toEndOf="@id/dc_sprintsale_item_disc_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dc_sprintsale_item_image" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/dc_sprintsale_item_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/Yellow_Y500"
            android:maxLines="1"
            app:typographyType="heading_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dc_sprintsale_item_disc_label"
            app:layout_constraintHorizontal_bias="0" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/dc_sprintsale_item_freeongkir"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dc_sprintsale_item_new_price" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>