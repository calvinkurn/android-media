<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dc_sprintsale_item_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.design.image.SquareImageView
        android:id="@+id/dc_sprintsale_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/dc_sprintsale_item_disc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dc_sprintsale_rounded_background"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FF5C84"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/dc_sprintsale_item_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:textColor="@color/Neutral_N700_44"
        app:typographyType="small"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dc_sprintsale_item_image"
        app:layout_constraintHorizontal_bias="0" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/dc_sprintsale_item_new_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:textColor="@color/Yellow_Y500"
        app:typographyType="heading_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dc_sprintsale_item_old_price"
        app:layout_constraintHorizontal_bias="0" />

</android.support.constraint.ConstraintLayout>
