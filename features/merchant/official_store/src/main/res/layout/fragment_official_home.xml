<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/official_home_motion"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/Unify_Background"
    app:currentState="@+id/start"
    app:layoutDescription="@xml/fragment_official_home_scene">
    <View
        android:visibility="invisible"
        android:id="@+id/statusbar"
        android:background="@color/Unify_N0"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/statusbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.tokopedia.searchbar.navigation_component.NavToolbar
            android:id="@+id/maintoolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:visibility="gone"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:toolbarPageName="OS Homepage"
            app:toolbarContentType="typeSearchbar"
            app:toolbarBackButton="none"
            app:toolbarInitialTheme="light"
            app:toolbarAlwaysShowShadow="false" />
    </FrameLayout>

    <com.tokopedia.officialstore.category.presentation.viewutil.OSChooseAddressWidgetView
        android:id="@+id/view_widget_choose_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/osDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/view_widget_choose_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tokopedia.officialstore.category.presentation.widget.OfficialCategoriesTab
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/Unify_Background"
        android:minHeight="32dp"
        android:maxHeight="64dp"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/Unify_P600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/osDivider"/>


    <include
        android:id="@+id/view_category_tab_loading"
        layout="@layout/view_official_store_category_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_widget_choose_address"
        tools:visibility="visible" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tablayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include layout="@layout/viewmodel_official_loading_content"
        android:id="@+id/view_content_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tablayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
