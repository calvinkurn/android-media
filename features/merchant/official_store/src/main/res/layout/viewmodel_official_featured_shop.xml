<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_featured_shop"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl5"
        android:layout_marginBottom="12dp"
        android:text="@string/os_featured_shop_title"/>

    <TextView
        android:layout_above="@+id/recycler_view_featured_shop"
        android:id="@+id/link_featured_shop"
        android:textColor="@color/Purple_P600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/fontSize_lvl2"
        android:text="@string/os_featured_shop_link"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/title_featured_shop"
        android:id="@+id/recycler_view_featured_shop"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>