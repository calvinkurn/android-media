<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_featured_shop"
        android:textColor="@color/Unify_N700_96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:maxLines="1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recycler_view_featured_shop"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/link_featured_shop"
        android:textColor="@color/Unify_P600"
        android:textSize="13sp"
        android:text="@string/os_featured_shop_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/title_featured_shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_featured_shop"
        app:layout_constraintBottom_toBottomOf="@id/title_featured_shop" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_featured_shop"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_featured_shop" />

</androidx.constraintlayout.widget.ConstraintLayout>
