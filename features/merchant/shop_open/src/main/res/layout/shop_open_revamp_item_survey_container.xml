<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_question_title_quisioner_page"
        android:text="@string/text_default_title_quisionaire"
        android:textColor="@color/title_text"
        android:lineSpacingExtra="@dimen/sp_6"
        android:letterSpacing="0.01"
        android:layout_marginBottom="@dimen/dp_39"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_choice_list"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>