<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradation_open_shop_intro">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_greeting"
        android:text="@string/title_text_greeting"
        android:textColor="@color/Unify_N700_96"
        android:lineSpacingExtra="@dimen/sp_6"
        android:letterSpacing="0.01"
        android:layout_marginTop="@dimen/dp_85"
        android:textSize="@dimen/sp_28"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:lineSpacingExtra="@dimen/sp_6"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:typographyType="body_1"
        android:textColor="@color/Unify_N700_96"
        android:text="@string/text_add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loading"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_120"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_weight="1"
        android:id="@+id/lottie_success_create_shop"
        app:lottie_autoPlay="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="74dp"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="0dp" />

</LinearLayout>