<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradation_open_shop_intro">

    <TextView
        android:id="@+id/txt_greeting"
        android:text="@string/title_text_greeting"
        android:textColor="@color/title_text"
        android:lineSpacingExtra="@dimen/sp_6"
        android:letterSpacing="0.01"
        android:textStyle="bold"
        android:textSize="@dimen/sp_28"
        android:layout_marginTop="@dimen/dp_64"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:lineSpacingExtra="@dimen/sp_6"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/title_text"
        android:text="@string/text_add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loading"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_120"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_success_create_shop"
        app:lottie_autoPlay="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="74dp"
        android:layout_width="289dp"
        android:layout_height="260dp" />


</LinearLayout>