<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradation_open_shop_intro">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:theme="?toolbarTheme"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_arrow_back_black" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/txt_greeting"
        android:textColor="@color/title_text"
        android:lineSpacingExtra="@dimen/sp_6"
        android:letterSpacing="0.01"
        android:textStyle="bold"
        android:textSize="@dimen/sp_28"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/dp_16"
        android:lineSpacingExtra="@dimen/sp_6"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/title_text"
        android:text="@string/shop_splash_screen_sub_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_icon_open_shop_finish"
        android:layout_width="289dp"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_64"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_icon_toped_announce_shop_open" />

</LinearLayout>