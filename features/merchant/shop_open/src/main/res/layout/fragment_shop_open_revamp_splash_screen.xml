<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradation_open_shop_intro">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/toolbar_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_greeting"
        android:textColor="@color/Unify_N700_96"
        android:lineSpacingExtra="6sp"
        android:letterSpacing="0.01"
        android:textSize="28sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="6sp"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/Unify_N700_96"
        android:text="@string/shop_splash_screen_sub_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typographyType="body_1"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:layout_weight="1"
        android:id="@+id/img_icon_open_shop_finish"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/content_desc_announce_shop_open"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_icon_toped_announce_shop_open" />

</LinearLayout>