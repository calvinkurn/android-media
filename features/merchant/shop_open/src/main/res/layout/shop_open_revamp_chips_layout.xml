<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chip_container"
    android:orientation="horizontal"
    android:layout_width="@dimen/dp_180"
    android:layout_height="wrap_content">

    <LinearLayout
        android:backgroundTint="@color/Blue_B500"
        android:id="@+id/chip_sub_container"
        android:orientation="horizontal"
        android:layout_width="142dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chip_image_icon"
            android:background="@drawable/unify_chips_bg_img_rounded_corner"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"/>

        <TextView
            android:id="@+id/chip_text"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/Neutral_N700_68"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/chip_close_icon"
        android:src="@drawable/unify_chips_ic_close"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"/>




</LinearLayout>