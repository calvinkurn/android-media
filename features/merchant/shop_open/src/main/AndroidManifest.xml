<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.shop.open">

    <application>

        <activity
            android:name=".view.activity.ShopOpenRoutingActivity"
            android:label="@string/title_open_shop"
            android:screenOrientation="portrait">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_shop_open"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.ShopOpenPostalCodeChooserActivity"
            android:label="@string/title_shop_postal_code"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

        <activity
            android:name=".view.activity.ShopOpenDomainActivity"
            android:label="@string/title_open_shop"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.activity.ShopOpenCreateReadyActivity"
            android:theme="@style/Theme.White"
            android:label="@string/title_open_shop"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".view.activity.ShopOpenWebViewActivity"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tokopedia.shop.open.shop_open_revamp.presentation.view.activity.ShopOpenRevampActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            android:theme="@style/Theme.White"
            android:screenOrientation="portrait" />

    </application>

</manifest>
