<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.shop.open">

    <application android:label="@string/app_name">

        <activity
            android:name=".view.activity.ShopOpenRoutingActivity"
            android:label="@string/title_open_shop"
            android:screenOrientation="portrait">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_marketplace"
                    android:path="@string/path_open_shop"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.ShopOpenCreateSuccessActivity"
            android:label="@string/title_shop_is_active"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.activity.ShopOpenReserveDomainSuccessActivity"
            android:label="@string/title_shop_is_active"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.activity.ShopOpenDomainActivity"
            android:label="@string/title_open_shop"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.activity.ShopOpenMandatoryActivity"
            android:exported="true"
            android:label="@string/title_shop_setting"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

    </application>

</manifest>
