<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line_divider"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/container_like"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_like"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    app:srcCompat="@drawable/ic_like_normal"
                    android:contentDescription="@null" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/text_counter_like"
                    app:typographyType="body_3"
                    android:textColor="@color/Unify_N700_44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    tools:text="Anda dan 2 orang terbantu" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/container_reply_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/see_reply_button"
                    app:typographyWeight="bold"
                    app:typographyType="body_2"
                    android:textColor="@color/Unify_N700_44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/see_reply" />

                <ImageView
                    android:id="@+id/reply_chevron"
                    android:layout_width="16dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    app:srcCompat="@drawable/ic_arrow_down_grey"
                    android:contentDescription="@null" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/reply_review_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_toStartOf="@+id/reply_overflow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/container_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.tokopedia.unifyprinciples.Typography
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:typographyWeight="reguler"
                        app:typographyType="body_2"
                        android:layout_marginEnd="5dp"
                        android:text="@string/product_review_label_by" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/seller_reply_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:typographyWeight="bold"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="Pretty Sugar Shop" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_3"
                    android:orientation="horizontal">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/seller_label"
                        android:layout_width="wrap_content"
                        android:textColor="@color/Unify_G500"
                        android:layout_height="wrap_content"
                        app:typographyWeight="bold"
                        app:typographyType="body_3"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/label_seller_shop_page"
                        android:gravity="center_horizontal"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp"
                        android:text="@string/seller"
                        android:textSize="@dimen/sp_12" />


                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/seller_reply_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:typographyType="body_3"
                        android:textColor="@color/Unify_N700_44"
                        android:textSize="@dimen/sp_12"
                        tools:text="31 Jul 2016, pukul 11:48" />
                </LinearLayout>


                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/seller_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typographyType="body_2"
                    android:layout_marginTop="10dp"
                    android:enabled="true"
                    android:focusable="true"
                    app:typographyWeight="reguler"
                    android:longClickable="true"
                    android:textIsSelectable="true"
                    tools:text="Terima kasih sudah mempercayai toko kami. Silahkan melihat-lihat produk” lainnya yang tersedia di toko kami." />
            </LinearLayout>

            <ImageView
                android:id="@+id/reply_overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_more_vertical_grey"
                android:contentDescription="@null" />
        </RelativeLayout>
    </LinearLayout>
</merge>