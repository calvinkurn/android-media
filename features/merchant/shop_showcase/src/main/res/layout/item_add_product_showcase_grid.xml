<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_card_view"
    app:cardElevation="@dimen/dp_16"
    android:elevation="@dimen/dp_16"
    app:card_type="shadow">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp_8"
        android:orientation="vertical">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="180dp"
            app:unify_image_corner_radius="0"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/delete_product_showcase"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_delete_card"
            app:unify_image_type="circle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            android:textColor="@color/primary_text_color"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@id/product_image"
            tools:text="@string/product_default_name"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typographyType="heading_5"
            android:textColor="@color/text_color_orange"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            tools:text="@string/product_showcase_price_text"
            />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            style="@style/RatingBar.Micro"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/product_price"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_review"
            app:layout_constraintLeft_toRightOf="@id/ratingBar"
            app:layout_constraintTop_toBottomOf="@id/product_price"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_4"
            app:typographyType="body_3"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_2"
            tools:text="@string/product_total_review"
            tools:visibility="visible"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.tokopedia.unifycomponents.CardUnify>