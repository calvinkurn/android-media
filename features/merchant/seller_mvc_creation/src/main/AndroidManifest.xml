<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tokopedia.mvc">

    <application>

        <activity
            android:name=".common.broadcastchat.BroadCastChatWebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White" />

        <activity
            android:name="com.tokopedia.mvc.presentation.detail.VoucherDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify">
            <intent-filter>
                <action android:name="com.tokopedia.internal.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/host_sellerapp"
                    android:path="@string/path_seller_mvc_list"
                    android:scheme="@string/internal_scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.list.MvcListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WhiteUnify" />

        <activity
            android:name="com.tokopedia.mvc.presentation.product.add.AddProductActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:label="@string/smvc_add_product"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.White"></activity>
    </application>

</manifest>