<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_input_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_ticker"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_input_text"
        app:layout_constraintStart_toStartOf="@+id/shimmer_input_text"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_input_text" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_btn_oke"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_btn_cancle"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_ticker"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shimmer_btn_cancle"
        app:layout_constraintTop_toTopOf="@+id/shimmer_btn_cancle"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_btn_cancle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        app:loader_type="rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_btn_oke"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/shimmer_ticker"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_ticker" />

</androidx.constraintlayout.widget.ConstraintLayout>