<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_discount_deduction_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/smvc_deduction_type_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.ContentSwitcherUnify
        android:id="@+id/switch_price_discount"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:textOff="@string/smvc_rupiah_label"
        android:textOn="@string/smvc_percent_symbol"
        app:layout_constraintBottom_toBottomOf="@+id/tpg_discount_deduction_type_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tpg_discount_deduction_type_label" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_discount_nominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpg_discount_deduction_type_label"
        app:unify_text_field_label_static="true"
        app:unify_text_field_placeholder="Contoh Rp10.000" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_discount_percentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpg_discount_deduction_type_label"
        app:unify_text_field_label_static="true"
        app:unify_text_field_placeholder="Min. 2% Maks. 100%" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_discount_max_deduction_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/smvc_max_deduction_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_discount_nominal"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_discount_max_deduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpg_discount_max_deduction_label"
        app:unify_text_field_label_static="true"
        app:unify_text_field_placeholder="Contoh Rp100.000"
        app:unify_text_field_prepend_text="Rp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_discount_minimum_buy_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/smvc_minimum_buy_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_discount_max_deduction"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_discount_minimum_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpg_discount_minimum_buy_label"
        app:unify_text_field_label_static="true"
        app:unify_text_field_message="Nominal harus lebih tinggi dari potongan harga."
        app:unify_text_field_placeholder="Contoh Rp20.000"
        app:unify_text_field_prepend_text="Rp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_discount_quota_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/smvc_quota_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_discount_minimum_buy"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_discount_quota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpg_discount_quota_label"
        app:unify_text_field_label_static="true"
        app:unify_text_field_placeholder="Contoh 100" />

</androidx.constraintlayout.widget.ConstraintLayout>