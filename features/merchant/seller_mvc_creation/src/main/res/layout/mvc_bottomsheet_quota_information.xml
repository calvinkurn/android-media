<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="4dp"
    android:paddingBottom="8dp"
    tools:context="com.tokopedia.mvc.presentation.bottomsheet.QuotaInformationBottomSheet">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgBullet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bullet_unicode"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintBottom_toBottomOf="@+id/tpgDescription1"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tpgDescription1"
        app:layout_constraintVertical_bias="0.0" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgDescription1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/mvc_bottomsheet_quota_information_point_one"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgBullet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bullet_unicode"
        android:textColor="@color/Neutral_N700_96"
        app:layout_constraintBottom_toBottomOf="@+id/tpgDescription2"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tpgDescription2"
        app:layout_constraintVertical_bias="0.0" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpgDescription2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/mvc_bottomsheet_quota_information_point_two"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@id/tpgDescription1"
        app:typographyType="display_2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
</androidx.constraintlayout.widget.ConstraintLayout>