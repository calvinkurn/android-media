<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_voucher_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/smvc_voucher_name_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_voucher_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpg_voucher_name_title"
        app:unify_text_field_counter="30"
        app:unify_text_field_label_static="true"
        app:unify_text_field_placeholder="@string/smvc_voucher_name_placeholder_label" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_pelajari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/smvc_pelajari_label"
        android:textColor="@color/Unify_GN500"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tf_voucher_name"
        app:layout_constraintTop_toBottomOf="@+id/tf_voucher_name"
        app:typographyType="paragraph_3"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>