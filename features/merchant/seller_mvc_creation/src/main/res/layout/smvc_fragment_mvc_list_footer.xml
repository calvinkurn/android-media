<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-16dp"
        android:layout_marginEnd="-16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tfQuotaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smvc_voucherlist_quota_remaining_text"
                android:textColor="@color/Unify_NN600"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnAddCoupon"
                app:typographyType="display_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tfQuotaCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tfQuotaTitle"
                app:typographyType="display_2" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/iconInfo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:icon_name="INFORMATION"
                app:layout_constraintBottom_toBottomOf="@+id/tfQuotaCounter"
                app:layout_constraintStart_toEndOf="@+id/tfQuotaCounter"
                app:layout_constraintTop_toTopOf="@+id/tfQuotaCounter" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btnAddCoupon"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/smvc_voucherlist_create_voucher_text"
                app:unifyButtonSize="small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify>

</androidx.constraintlayout.widget.ConstraintLayout>
