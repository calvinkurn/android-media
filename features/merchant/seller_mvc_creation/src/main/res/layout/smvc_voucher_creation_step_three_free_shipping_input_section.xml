<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_free_shipping_nominal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/smvc_free_shipping_nominal_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_free_shipping_nominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpg_free_shipping_nominal_label"
        app:unify_text_field_label_static="true"
        app:unify_text_field_placeholder="Min. Rp5.000"
        app:unify_text_field_prepend_text="Rp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_free_shipping_minimum_buy_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/smvc_minimum_buy_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_free_shipping_nominal"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_free_shipping_minimum_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:unify_text_field_message="@string/smvc_minimum_buy_desc_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpg_free_shipping_minimum_buy_label"
        app:unify_text_field_label_static="true"
        app:unify_text_field_placeholder="Contoh Rp20.000"
        app:unify_text_field_prepend_text="Rp" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tpg_free_shipping_quota_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/smvc_quota_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tf_free_shipping_minimum_buy"
        app:typographyType="display_2"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.TextFieldUnify2
        android:id="@+id/tf_free_shipping_quota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tpg_free_shipping_quota_label"
        app:unify_text_field_label_static="true"
        app:unify_text_field_placeholder="Contoh 100" />

</androidx.constraintlayout.widget.ConstraintLayout>