<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/Unify_TN50">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/Unify_NN1000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            tools:text="Estimasi Pengeluaran" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/info_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="8dp"
            app:icon_name="INFORMATION"
            app:layout_constraintBottom_toBottomOf="@+id/tpg_title"
            app:layout_constraintStart_toEndOf="@+id/tpg_title"
            app:layout_constraintTop_toTopOf="@+id/tpg_title" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_description"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintEnd_toStartOf="@+id/tpg_spending_estimation"
            app:layout_constraintStart_toStartOf="@id/tpg_title"
            app:layout_constraintTop_toBottomOf="@+id/tpg_title"
            app:typographyType="display_3"
            app:typographyWeight="reguler"
            android:lineSpacingExtra="2dp"
            tools:text="@string/smvc_spending_estimation_description_2" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tpg_spending_estimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/Unify_NN1000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="display_2"
            app:typographyWeight="bold"
            tools:text="Rp3.200.000" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>