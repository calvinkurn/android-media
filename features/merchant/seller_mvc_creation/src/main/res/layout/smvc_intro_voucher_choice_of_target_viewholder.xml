<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_intro_choice_of_target"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:gravity="center"
        app:typographyType="heading_3"
        android:layout_marginTop="22dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="AAABABAB"/>

    <com.tokopedia.mvc.presentation.intro.customviews.IntroVoucherCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:id="@+id/view_flexible_for_coupons"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.tokopedia.mvc.presentation.intro.customviews.IntroVoucherCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_selection_coupons"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        app:layout_constraintTop_toBottomOf="@id/view_flexible_for_coupons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>