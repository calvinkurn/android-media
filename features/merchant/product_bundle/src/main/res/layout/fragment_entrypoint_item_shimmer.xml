<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_image"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="@dimen/layout_lvl7"
        android:layout_marginStart="@dimen/spacing_lvl4"
        app:corners="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_title1"
        android:layout_width="0dp"
        android:layout_height="@dimen/unify_space_12"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl6"
        app:corners="16"
        app:layout_constraintStart_toEndOf="@+id/loader_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_title2"
        android:layout_width="0dp"
        android:layout_height="@dimen/unify_space_12"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl9"
        app:corners="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_image"
        app:layout_constraintTop_toBottomOf="@+id/loader_title1" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_title3"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:corners="24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_image"
        app:layout_constraintTop_toBottomOf="@+id/loader_title2" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_title4"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:corners="16"
        app:layout_constraintStart_toEndOf="@+id/loader_image"
        app:layout_constraintTop_toBottomOf="@+id/loader_title3" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_title5"
        android:layout_width="@dimen/layout_lvl8"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl3"
        app:corners="16"
        app:layout_constraintStart_toEndOf="@+id/loader_title4"
        app:layout_constraintTop_toBottomOf="@+id/loader_title3" />

</androidx.constraintlayout.widget.ConstraintLayout>