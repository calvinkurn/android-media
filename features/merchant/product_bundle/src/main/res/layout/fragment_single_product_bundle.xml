<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".single.presentation.SingleProductBundleFragment">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bundle_sold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_lvl4"
        android:text="Terjual 50 paket"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.abstraction.base.view.widget.SwipeToRefresh
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/layout_lvl7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bundle_sold">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bundle_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/layout_lvl2"
            android:clipToPadding="false" />

    </com.tokopedia.abstraction.base.view.widget.SwipeToRefresh>

    <com.tokopedia.totalamount.TotalAmount
        android:id="@+id/total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:unify_total_amount_cta_text="Beli Paket"
        app:unify_total_amount_enable_shadow="true"
        app:unify_total_amount_enable_title_chevron="false"
        app:unify_total_amount_subtitle_text="Hemat Rp0"
        app:unify_total_amount_text="Rp0"
        app:unify_total_amount_title_suffix_text="Rp0"
        app:unify_total_amount_title_text=" " />

</androidx.constraintlayout.widget.ConstraintLayout>