<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/review_pending_bulk_card_product_image"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/review_pending_bulk_card_product_more"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/Unify_NN1000_44"
            android:gravity="center"
            android:textColor="@color/Unify_NN0"
            app:layout_constraintBottom_toBottomOf="@id/review_pending_bulk_card_product_image"
            app:layout_constraintEnd_toEndOf="@id/review_pending_bulk_card_product_image"
            app:layout_constraintStart_toStartOf="@id/review_pending_bulk_card_product_image"
            app:layout_constraintTop_toTopOf="@id/review_pending_bulk_card_product_image"
            app:typographyType="display_1"
            tools:text="+5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify2>