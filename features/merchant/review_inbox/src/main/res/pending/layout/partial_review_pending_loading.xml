<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/item_review_pending_shimmering"
        android:id="@+id/shimmer_card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/layout_lvl1"/>

    <include layout="@layout/item_review_pending_shimmering"
        android:id="@+id/shimmer_card_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shimmer_card_1" />

    <include layout="@layout/item_review_pending_shimmering"
        android:id="@+id/shimmer_card_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shimmer_card_2" />

    <include layout="@layout/item_review_pending_shimmering"
        android:id="@+id/shimmer_card_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shimmer_card_3" />

</androidx.constraintlayout.widget.ConstraintLayout>