<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?android:selectableItemBackground"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/review_pending_credibility_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/review_pending_credibility_title"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/Unify_NN950_96"
                app:layout_constraintBottom_toTopOf="@id/review_pending_credibility_subtitle"
                app:layout_constraintEnd_toStartOf="@id/review_pending_credibility_chevron"
                app:layout_constraintStart_toEndOf="@id/review_pending_credibility_image"
                app:layout_constraintTop_toTopOf="@id/review_pending_credibility_image"
                app:layout_constraintVertical_chainStyle="packed"
                app:typographyType="heading_5"
                app:typographyWeight="bold"
                tools:text="Cek kontribusi ulasanmu di 2021"
                tools:visibility="visible" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/review_pending_credibility_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/Unify_NN950_68"
                app:layout_constraintBottom_toBottomOf="@id/review_pending_credibility_image"
                app:layout_constraintEnd_toStartOf="@id/review_pending_credibility_chevron"
                app:layout_constraintStart_toEndOf="@id/review_pending_credibility_image"
                app:layout_constraintTop_toBottomOf="@id/review_pending_credibility_title"
                app:typographyType="body_3"
                app:typographyWeight="reguler"
                tools:text="Kamu sudah bantu banyak orang, lho!"
                tools:visibility="visible" />

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/review_pending_credibility_chevron"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:icon_name="CHEVRON_RIGHT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.unifycomponents.CardUnify>
</androidx.constraintlayout.widget.ConstraintLayout>