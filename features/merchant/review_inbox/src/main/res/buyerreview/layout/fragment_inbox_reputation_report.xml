<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N50"
    android:orientation="vertical">

    <Button
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding_activity"
        android:background="@drawable/bg_button_disabled"
        android:enabled="false"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="7sp"
        android:text="@string/submit_review"
        android:textColor="@color/Unify_N500"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/send_button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/Unify_N0"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:padding="@dimen/padding_activity"
                android:text="@string/review_report_question"
                android:textColor="@color/Unify_N700_68"
                app:typographyWeight="reguler"
                app:typographyType="body_1"
                />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question"
                android:background="@color/Unify_N0"
                android:paddingBottom="@dimen/padding_activity"
                android:paddingLeft="@dimen/padding_activity"
                android:paddingRight="@dimen/padding_activity">

                <RadioButton
                    android:id="@+id/report_spam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/report_option_spam"
                    android:textColor="@color/Unify_N700_44"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"/>

                <RadioButton
                    android:id="@+id/report_sara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/report_option_sara"
                    android:textColor="@color/Unify_N700_44"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"/>

                <RadioButton
                    android:id="@+id/report_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/report_option_others"
                    android:textColor="@color/Unify_N700_44"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="normal"/>

                <EditText
                    android:id="@+id/reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="32dp"
                    android:textColor="@color/Unify_N700_96"
                    android:textColorHint="@color/Unify_N700_44"
                    android:hint="@string/hint_input_reason"
                    android:paddingLeft="@dimen/padding_activity"
                    android:paddingRight="@dimen/padding_activity"
                    />
            </RadioGroup>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>