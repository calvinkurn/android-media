<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="@string/seller_reputation"
        android:textColor="@color/Unify_NN950_68"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        style="@style/TextView.Small.BlackDisabled"
        android:lineSpacingExtra="7sp"
        android:text="@string/seller_reputation_given_by_buyer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/seller_reputation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/iv_reputation_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:unify_image_corner_radius="0" />

        </LinearLayout>

        <TextView
            android:id="@+id/reputation_point"
            style="@style/TextView.Small.BlackDisabled"
            android:lineSpacingExtra="7sp"
            tools:text="200 Poin" />
    </LinearLayout>

    <Button
        android:id="@+id/close_button"
        style="@style/TextView.Small.WhitePrimary"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/Unify_GN500"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="7sp"
        android:text="@string/close" />
</LinearLayout>