<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_5"
    android:background="@color/Unify_Background">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:layout_weight="1"
        android:background="@drawable/bg_edittext_send_review"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/add_template"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            app:srcCompat="@drawable/reputation_ic_add_black_48dp"
            android:visibility="gone"
            tools:visibility="gone"/>

        <EditText
            android:id="@+id/seller_reply_edit_text"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="24dp"
            android:inputType="textMultiLine"
            android:scrollHorizontally="false"
            android:hint="@string/hint_write_reply"
            android:textColor="@color/Unify_NN950_96"
            android:textColorHint="@color/Unify_NN950_44"
            android:scrollbars="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/add_template"
            android:textSize="@dimen/sp_14"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/send_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        app:srcCompat="@drawable/ic_send_grey_transparent"/>

</LinearLayout>