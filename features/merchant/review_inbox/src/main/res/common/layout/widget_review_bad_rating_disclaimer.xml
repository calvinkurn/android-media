<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/review_bad_rating_disclaimer_image"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:srcCompat="@drawable/review_bad_rating_disclaimer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_bad_rating_disclaimer_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/review_bad_rating_disclaimer_image"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="small"
        tools:text="Rating tidak ditambahkan ke total rating barang karena kendala ada di proses pengiriman. Tapi tenang, ulasan ini sudah diteruskan ke pihak terkait." />

</androidx.constraintlayout.widget.ConstraintLayout>