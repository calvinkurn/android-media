<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/skeleton_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_10"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:corners="16"
        app:layout_constraintBottom_toBottomOf="@+id/skeleton_2"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/skeleton_2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/skeleton_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_10"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginEnd="@dimen/spacing_lvl4"
        android:layout_marginRight="@dimen/spacing_lvl4"
        app:corners="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.design.loading.LoadingStateView
        android:id="@+id/line_1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="17dp"
        android:background="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_2" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/filterShimmer1"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginStart="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/line_1"
        app:corners="35" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/filterShimmer2"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/spacing_lvl6"
        android:layout_marginTop="@dimen/spacing_lvl4"
        android:layout_marginLeft="@dimen/spacing_lvl3"
        android:layout_marginStart="@dimen/spacing_lvl3"
        app:layout_constraintStart_toEndOf="@id/filterShimmer1"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        android:layout_marginEnd="@dimen/spacing_lvl2"
        android:layout_marginRight="@dimen/spacing_lvl2"
        app:corners="35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/filterShimmer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <include
            android:id="@+id/partial_feedback_detail_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/partial_feedback_detail_shimmer"
            android:layout_marginTop="@dimen/spacing_lvl4" />

        <include
            android:id="@+id/partial_feedback_detail_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/partial_feedback_detail_shimmer"
            android:layout_marginTop="@dimen/spacing_lvl4" />

        <include
            android:id="@+id/partial_feedback_detail_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/partial_feedback_detail_shimmer"
            android:layout_marginTop="@dimen/spacing_lvl4" />

        <include
            android:id="@+id/partial_feedback_detail_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/partial_feedback_detail_shimmer"
            android:layout_marginTop="@dimen/spacing_lvl4" />

        <include
            android:id="@+id/partial_feedback_detail_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/partial_feedback_detail_shimmer"
            android:layout_marginTop="@dimen/spacing_lvl4" />

        <include
            android:id="@+id/partial_feedback_detail_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/partial_feedback_detail_shimmer"
            android:layout_marginTop="@dimen/spacing_lvl4" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>