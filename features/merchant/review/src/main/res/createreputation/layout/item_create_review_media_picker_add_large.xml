<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_review_add_media_enable">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/ic_create_review_media_add"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:icon_name="CAMERA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_create_review_media_add"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_create_review_media_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/review_form_add_media"
        android:textColor="@color/Unify_NN950_68"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_create_review_media_add"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_2" />

</androidx.constraintlayout.widget.ConstraintLayout>