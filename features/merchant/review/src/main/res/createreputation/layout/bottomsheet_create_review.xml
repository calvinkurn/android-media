<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.review.feature.createreputation.presentation.widget.CreateReviewProductCard
        android:id="@+id/review_form_product_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_form_rating_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_create_rating_prompt"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:typographyType="heading_4"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_form_product_card" />

    <com.tokopedia.reputation.common.view.AnimatedRatingPickerCreateReviewView
        android:id="@+id/review_form_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_form_rating_prompt" />

    <FrameLayout
        android:id="@+id/review_form_incentives_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/review_form_rating">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.unifycomponents.DividerUnify
                android:id="@+id/review_form_rating_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_12"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.Label
                android:id="@+id/review_form_incentives_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:labelTitle="@string/review_create_incentives_label"
                app:labelType="general_light_green"
                app:layout_constraintBottom_toBottomOf="@id/review_form_rating_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/review_form_rating_divider" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_form_text_area_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_form_incentives_container"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="Apa yang bikin kamu puas?" />

    <com.tokopedia.review.feature.createreputation.presentation.widget.CreateReviewTextArea
        android:id="@+id/review_form_text_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-16dp"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="-16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_form_text_area_title" />

    <com.tokopedia.review.feature.createreputation.presentation.widget.CreateReviewAnonymousOption
        android:id="@+id/review_form_anonymous_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-16dp"
        android:layout_marginEnd="-16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/review_form_text_area" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/review_form_progress_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/review_form_anonymous_option" />

    <com.tokopedia.review.feature.createreputation.presentation.widget.CreateReviewProgressBar
        android:id="@+id/review_form_progress_bar_widget"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/review_form_submit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_form_progress_bar_divider" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/review_form_submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:text="@string/submit_review"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_form_progress_bar_divider" />


</androidx.constraintlayout.widget.ConstraintLayout>