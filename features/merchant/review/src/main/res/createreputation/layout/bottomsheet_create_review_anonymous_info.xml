<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_create_review_anonymous_info_illustration"
        android:layout_width="145dp"
        android:layout_height="145dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_create_review_anonymous_info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/create_review_anonymous_info_header"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/iv_create_review_anonymous_info_illustration"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_create_review_anonymous_info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/create_review_anonymous_info_description"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintTop_toBottomOf="@id/tv_create_review_anonymous_info_header"
        app:typographyType="paragraph_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_create_review_anonymous_info_description_bullet_point_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/bullet"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_create_review_anonymous_info_description"
        app:typographyType="paragraph_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_create_review_anonymous_info_description_point_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/create_review_anonymous_info_description_point_one"
        android:textColor="@color/Unify_NN600"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_create_review_anonymous_info_description_bullet_point_one"
        app:layout_constraintTop_toTopOf="@id/tv_create_review_anonymous_info_description_bullet_point_one"
        app:typographyType="paragraph_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_create_review_anonymous_info_description_bullet_point_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/bullet"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_create_review_anonymous_info_description_point_one"
        app:typographyType="paragraph_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_create_review_anonymous_info_description_point_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="@string/create_review_anonymous_info_description_point_two"
        android:textColor="@color/Unify_NN600"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_create_review_anonymous_info_description_bullet_point_two"
        app:layout_constraintTop_toTopOf="@id/tv_create_review_anonymous_info_description_bullet_point_two"
        app:typographyType="paragraph_2" />

</androidx.constraintlayout.widget.ConstraintLayout>