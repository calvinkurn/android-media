<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    tools:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_bulk_write_review_form_actions"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.review.feature.bulk_write_review.presentation.widget.WidgetBulkReviewMiniAction
        android:id="@+id/bulk_review_mini_action_testimony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_bulk_write_review_form_actions" />

    <com.tokopedia.review.feature.bulk_write_review.presentation.widget.WidgetBulkReviewMiniAction
        android:id="@+id/bulk_review_mini_action_attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bulk_review_mini_action_testimony"
        app:layout_constraintTop_toBottomOf="@id/divider_bulk_write_review_form_actions" />

</androidx.constraintlayout.widget.ConstraintLayout>