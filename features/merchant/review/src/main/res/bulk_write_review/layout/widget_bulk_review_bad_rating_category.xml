<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    tools:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_bad_rating_reasons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/Unify_NN600"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/tv_change_bad_rating_reasons"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="paragraph_3"
        tools:text="Kendala: Kualitas barang bermasalah, Tidak lengkap/salah kirim" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_change_bad_rating_reasons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/tv_bulk_review_bad_rating_category_change"
        android:textColor="@color/Unify_GN500"
        app:layout_constraintBottom_toBottomOf="@id/tv_bad_rating_reasons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_bad_rating_reasons"
        app:typographyType="paragraph_3"
        app:typographyWeight="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>