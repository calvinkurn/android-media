<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bulk_review_bad_rating_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/container_bulk_review_bad_rating_category_cta"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_bulk_review_bad_rating_category" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_bulk_review_bad_rating_category_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_Background"
        android:elevation="8dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_bulk_review_bad_rating_category_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_bulk_review_bad_rating_category_cta_text"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>