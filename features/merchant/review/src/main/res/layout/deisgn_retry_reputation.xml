<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/img_reputation_retry"
        android:layout_width="96dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_empty_penalti_reputasi" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/good_job_reputation_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_reputation_retry"
        android:layout_centerHorizontal="true"
        android:text="@string/reputation_history_label_good_job"
        android:layout_marginBottom="2dp"
        android:textColor="@color/Unify_NN950_32"
        app:typographyWeight="bold"
        app:typographyType="heading_5"/>

    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/description_reputation_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_job_reputation_retry"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/reputation_history_label_info_no_penalty"
        android:textAlignment="gravity"
        android:textColor="@color/Unify_NN950_32"
        app:typographyWeight="reguler"
        app:typographyType="body_3" />

    <LinearLayout
        android:id="@+id/reputation_container_change_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_reputation_retry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/change_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/reputation_history_label_change_date"
            android:textColor="@color/Unify_GN500"
            app:typographyWeight="reguler"
            app:typographyType="body_2"/>
    </LinearLayout>

</RelativeLayout>