<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.header.HeaderUnify
        android:id="@+id/reviewDetailHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:unify_header_is_show_back_button="true"
        app:unify_header_is_show_shadow="false"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/reviewDetailHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.tokopedia.review.common.presentation.widget.ReviewProductCard
                android:id="@+id/reviewDetailProductCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_lvl1"
                android:layout_marginEnd="@dimen/layout_lvl1"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reviewDetailStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_lvl2"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginLeft="@dimen/layout_lvl2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reviewDetailProductCard"
                tools:src="@drawable/ic_rating_star_four" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/reviewDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:text="Sebagai Alexandra Ronodipuro"
                app:layout_constraintStart_toStartOf="@id/reviewDetailStars"
                app:layout_constraintTop_toBottomOf="@id/reviewDetailStars"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/reviewDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/reviewDetailName"
                app:layout_constraintStart_toEndOf="@id/reviewDetailName"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/reviewDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl2"
                android:layout_marginStart="@dimen/layout_lvl2"
                android:layout_marginEnd="@dimen/layout_lvl2"
                android:text="Udah nyari Nike Air Force 1 Low White Red Casual Shoes ini akhirnya dapet juga di toko ini, thanks banget gan! barang dijamin ori sesuai deskripsi, kualitas mantap, kemasannya rapih, pengirimannya tepat waktu, recommended seller deh pokoknya gak akan kapok belanja kemari gan! next nya gw cari sepatu rare lagi."
                app:layout_constraintTop_toBottomOf="@id/reviewDetailName" />

            <com.tokopedia.review.common.presentation.widget.ReviewAttachedImages
                android:id="@+id/reviewDetailAttachedImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/reviewDetailContent"/>

            <com.tokopedia.review.feature.historydetails.presentation.widget.ReviewDetailResponseWidget
                android:id="@+id/reviewDetailResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/reviewDetailAttachedImages"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <include layout="@layout/partial_review_connection_error"
        android:id="@+id/reviewDetailConnectionError"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone" />

    <include layout="@layout/partial_review_details_shimmering"
        android:id="@+id/reviewDetailShimmer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>