<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/seller_migration_card_side_margin"
    android:layout_marginLeft="@dimen/seller_migration_card_side_margin"
    android:layout_marginEnd="@dimen/seller_migration_card_side_margin"
    android:layout_marginRight="@dimen/seller_migration_card_side_margin"
    android:layout_marginBottom="@dimen/dp_4"
    android:padding="@dimen/layout_lvl2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_seller_migration_review"
            android:layout_width="@dimen/size_seller_migration_review_icon"
            android:layout_height="@dimen/size_seller_migration_review_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_seller_migration_review_right_arrow"
            android:layout_width="@dimen/size_seller_migration_review_right_arrow_icon"
            android:layout_height="@dimen/size_seller_migration_review_right_arrow_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_system_action_arrow_right_grayscale_24" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_seller_migration_review_title"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:text="@string/seller_migration_review_title"
            android:textColor="@color/Unify_N700_96"
            app:layout_constraintEnd_toStartOf="@id/iv_seller_migration_review_right_arrow"
            app:layout_constraintLeft_toRightOf="@id/iv_seller_migration_review"
            app:layout_constraintRight_toLeftOf="@id/iv_seller_migration_review_right_arrow"
            app:layout_constraintStart_toEndOf="@id/iv_seller_migration_review"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_6" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_seller_migration_review_description"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:text="@string/seller_migration_review_description"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintEnd_toStartOf="@id/iv_seller_migration_review_right_arrow"
            app:layout_constraintLeft_toRightOf="@id/iv_seller_migration_review"
            app:layout_constraintRight_toLeftOf="@id/iv_seller_migration_review_right_arrow"
            app:layout_constraintStart_toEndOf="@id/iv_seller_migration_review"
            app:layout_constraintTop_toBottomOf="@id/tv_seller_migration_review_title"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.Label
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_lvl1"
            android:layout_marginLeft="@dimen/layout_lvl1"
            android:layout_marginTop="4dp"
            android:text="@string/seller_migration_label_seller_app_only"
            app:labelType="general_light_green"
            app:layout_constraintLeft_toRightOf="@id/iv_seller_migration_review"
            app:layout_constraintStart_toEndOf="@id/iv_seller_migration_review"
            app:layout_constraintTop_toBottomOf="@id/tv_seller_migration_review_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>