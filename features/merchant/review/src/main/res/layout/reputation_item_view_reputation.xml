<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/reputationBadge"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="@id/reputation_points"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/reputation_points"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reputation_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_1"
        app:typographyWeight="reguler"
        tools:text="500.007 poin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reputationBadge"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>