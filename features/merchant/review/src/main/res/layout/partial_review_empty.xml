<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:paddingBottom="@dimen/layout_lvl2"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/reviewEmptyImage"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/layout_lvl5"
        android:layout_marginEnd="@dimen/layout_lvl5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewEmptyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:gravity="center"
        android:layout_marginStart="@dimen/layout_lvl6"
        android:layout_marginEnd="@dimen/layout_lvl6"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/reviewEmptyImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewEmptySubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center"
        android:layout_marginStart="@dimen/layout_lvl6"
        android:layout_marginEnd="@dimen/layout_lvl6"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/reviewEmptyTitle"/>
    
    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/reviewEmptyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:text="@string/review_pending_shop_button"
        app:unifyButtonVariant="filled"
        app:unifyButtonType="main"
        app:unifyButtonSize="medium"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toBottomOf="@id/reviewEmptySubtitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>