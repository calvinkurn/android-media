<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/search_not_found_icon_size"
        android:layout_height="@dimen/search_not_found_icon_size"
        android:contentDescription="@null"
        app:srcCompat="@drawable/reputation_ic_toped_empty_search"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/Unify_N700_44"
        app:typographyWeight="reguler"
        app:typographyType="body_2"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_activity"
        android:background="@drawable/reputation_green_button_rounded_unify"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="7sp"
        android:textColor="@color/Unify_N0"
        app:typographyWeight="reguler"
        app:typographyType="body_2"
        />
</LinearLayout>