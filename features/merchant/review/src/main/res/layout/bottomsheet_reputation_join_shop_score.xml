<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/card_date_move_reputation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/bg_content_info_penalty">

            <com.tokopedia.unifycomponents.CardUnify
                android:id="@+id/tv_title_reputation_join_shop_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_lvl4"
                android:layout_marginTop="@dimen/spacing_lvl4"
                android:layout_marginEnd="@dimen/spacing_lvl5">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/spacing_lvl5">

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_title_move_reputation"
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_lvl4"
                        android:layout_marginTop="@dimen/spacing_lvl4"
                        android:layout_marginEnd="@dimen/spacing_lvl4"
                        android:text="@string/title_reputation_join_shop_score"
                        android:textColor="@color/Unify_N700_96"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:typographyType="body_2" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_title_performance_page"
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_lvl4"
                        android:layout_marginTop="@dimen/spacing_lvl1"
                        android:layout_marginEnd="@dimen/spacing_lvl4"
                        android:text="@string/title_shop_performance"
                        android:textColor="@color/Unify_N700_96"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_move_reputation"
                        app:typographyType="heading_5" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_speaker_green"
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_lvl4"
                        android:layout_marginTop="@dimen/dp_12"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_performance_page"
                        app:srcCompat="@drawable/ic_speaker_green" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/tv_date_performance_page"
                        android:layout_width="@dimen/layout_lvl0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_lvl3"
                        app:layout_constraintBottom_toBottomOf="@id/ic_speaker_green"
                        app:layout_constraintStart_toEndOf="@id/ic_speaker_green"
                        app:layout_constraintTop_toTopOf="@id/ic_speaker_green"
                        app:typographyType="body_2"
                        tools:text="Mulai dari 21 - 03 - 2020" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.tokopedia.unifycomponents.CardUnify>

        </FrameLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_content_move_reputation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginTop="@dimen/spacing_lvl5"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:paddingBottom="@dimen/spacing_lvl5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnShopPerformance"
            app:layout_constraintTop_toBottomOf="@id/card_date_move_reputation">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_more_interest_buyer"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_3"
                tools:text="@string/more_interest_candidate_buyer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_more_interest_buyer"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_more_interest_buyer" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_more_focus_shop_service"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:text="@string/more_focus_shop_service"
                android:layout_marginTop="@dimen/spacing_lvl6"
                app:typographyType="heading_5"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_more_interest_buyer" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_desc_more_focus_shop_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_3"
                android:text="@string/desc_more_focus_shop_service"
                android:layout_marginTop="@dimen/spacing_lvl2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_more_focus_shop_service" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_more_focus_shop_service"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lvl6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_desc_more_focus_shop_service" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_get_benefit_performance"
                android:layout_width="@dimen/layout_lvl0"
                android:layout_height="wrap_content"
                android:text="@string/title_get_benefit_performance"
                android:layout_marginTop="@dimen/spacing_lvl6"
                app:typographyType="heading_5"
                android:textColor="@color/Unify_N700_96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_more_focus_shop_service" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_desc_get_benefit_performance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_N700_96"
                app:typographyType="body_3"
                tools:text="@string/desc_get_benefit_performance"
                android:layout_marginTop="@dimen/spacing_lvl2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_get_benefit_performance" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btnShopPerformance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_content_move_reputation"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/spacing_lvl5"
            app:unifyButtonSize="medium"
            app:unifyButtonType="main"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl3"
            android:text="@string/btn_shop_performance" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>