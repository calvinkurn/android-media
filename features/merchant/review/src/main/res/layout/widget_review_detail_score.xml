<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_detail_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N700_96"
        android:visibility="gone"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        tools:text="@string/review_history_details_score_title"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewDetailScoreShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/review_detail_score_title"
        app:layout_constraintTop_toBottomOf="@id/review_detail_score_title" />

    <ImageView
        android:id="@+id/reviewDetailScoreSmiley"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/review_detail_score_title"
        app:layout_constraintTop_toBottomOf="@id/reviewDetailScoreShopName"
        tools:src="@drawable/ic_smiley_bad_active"
        tools:visibility="visible"/>
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewDetailScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/reviewDetailScoreSmiley"
        app:layout_constraintTop_toTopOf="@id/reviewDetailScoreSmiley"
        app:layout_constraintBottom_toBottomOf="@id/reviewDetailScoreSmiley"
        tools:visibility="visible"
        tools:text="@string/review_detail_score_bad"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/reviewDetailEditableScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_smiley_editable"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewDetailScoreShopName"/>

</androidx.constraintlayout.widget.ConstraintLayout>