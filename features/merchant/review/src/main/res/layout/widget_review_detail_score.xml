<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewDetailScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:textColor="@color/Neutral_N700_96"
        android:text="@string/review_history_details_score_title"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewDetailScoreShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Neutral_N700_96"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:visibility="gone"
        app:typographyType="body_2"
        app:layout_constraintStart_toStartOf="@id/reviewDetailScoreTitle"
        app:layout_constraintTop_toBottomOf="@id/reviewDetailScoreTitle"
        tools:visibility="visible"
        tools:text="Tokopedia"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/reviewDetailScoreSmiley"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/reviewDetailScoreTitle"
        app:layout_constraintTop_toBottomOf="@id/reviewDetailScoreShopName"
        tools:src="@drawable/ic_smiley_bad_active"
        tools:visibility="gone"/>
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewDetailScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:layout_marginLeft="@dimen/layout_lvl1"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/reviewDetailScoreSmiley"
        app:layout_constraintTop_toTopOf="@id/reviewDetailScoreSmiley"
        app:layout_constraintBottom_toBottomOf="@id/reviewDetailScoreSmiley"
        tools:visibility="gone"
        tools:text="@string/review_detail_score_bad"/>

    <com.tokopedia.review.common.presentation.widget.ReviewSmileyWidget
        android:id="@+id/reviewEditableBadSmiley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl7"
        android:layout_marginLeft="@dimen/layout_lvl7"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewDetailScoreShopName"/>

    <com.tokopedia.review.common.presentation.widget.ReviewSmileyWidget
        android:id="@+id/reviewEditableMediocreSmiley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/reviewEditableBadSmiley"
        app:layout_constraintEnd_toStartOf="@id/reviewEditableGreatSmiley"
        app:layout_constraintTop_toBottomOf="@id/reviewDetailScoreShopName" />

    <com.tokopedia.review.common.presentation.widget.ReviewSmileyWidget
        android:id="@+id/reviewEditableGreatSmiley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl7"
        android:layout_marginRight="@dimen/layout_lvl7"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewDetailScoreShopName"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewScoreDeadlineLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:text="@string/review_reputation_deadline"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewEditableBadSmiley"
        app:typographyType="body_3"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewScoreDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:layout_constraintStart_toEndOf="@id/reviewScoreDeadlineLabel"
        app:layout_constraintTop_toTopOf="@id/reviewScoreDeadlineLabel"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>