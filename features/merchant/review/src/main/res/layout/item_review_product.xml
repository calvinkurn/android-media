<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="6dp"
    android:paddingRight="16dp"
    android:paddingBottom="6dp"
    tools:viewBindingIgnore="true">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/image_item"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintBottom_toTopOf="@id/text_rating"
        app:layout_constraintLeft_toRightOf="@id/image_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/icon_star"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:icon_color_light_enable="@color/Unify_Y300"
        app:icon_name="STAR_FILLED"
        app:layout_constraintBottom_toBottomOf="@id/text_rating"
        app:layout_constraintLeft_toLeftOf="@id/text_name"
        app:layout_constraintTop_toTopOf="@id/text_rating" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/image_item"
        app:layout_constraintLeft_toRightOf="@id/icon_star"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:layout_constraintVertical_chainStyle="packed"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/text_buyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/text_rating"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />


</androidx.constraintlayout.widget.ConstraintLayout>