<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/reviewPendingProductImage"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/reviewPendingProductName"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:visibility="gone"
            app:typographyWeight="bold"
            app:typographyType="body_2"
            app:layout_constraintStart_toEndOf="@id/reviewPendingProductImage"
            app:layout_constraintTop_toTopOf="@id/reviewPendingProductImage"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/reviewPendingProductVariant"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:visibility="gone"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            app:layout_constraintStart_toStartOf="@id/reviewPendingProductName"
            app:layout_constraintTop_toBottomOf="@id/reviewPendingProductName"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/reviewPendingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:typographyWeight="reguler"
            app:typographyType="body_3"
            app:layout_constraintTop_toTopOf="@id/reviewPendingProductImage"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.reputation.common.view.AnimatedReputationView
            android:id="@+id/reviewStars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/reviewPendingProductName"
            app:layout_constraintTop_toBottomOf="@id/reviewPendingProductName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:show_desc="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.tokopedia.unifycomponents.CardUnify>