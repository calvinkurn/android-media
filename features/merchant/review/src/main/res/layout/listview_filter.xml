<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="7sp"
        android:padding="@dimen/padding_activity"
        android:textColor="@color/Unify_N700_44"
        tools:text="Semua waktu"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        />

    <ImageView
        android:id="@+id/check"
        android:layout_width="@dimen/icon_prod_size"
        android:layout_height="@dimen/icon_prod_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/padding_activity"
        android:contentDescription="@null"
        app:srcCompat="@drawable/reputation_ic_check_green_24dp"
        />
</RelativeLayout>