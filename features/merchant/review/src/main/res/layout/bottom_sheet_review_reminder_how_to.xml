<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_reminder_how_to_title_1"
            app:typographyType="heading_4"
            app:typographyWeight="bold" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            app:unify_image_url_src="https://images.tokopedia.net/img/android/review_reminder/open_review_reminder.png" />


        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/review_reminder_how_to_description_1"
            app:typographyType="body_2" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/line_divider" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/review_reminder_how_to_title_2"
            app:typographyType="heading_4" />

        <com.tokopedia.unifycomponents.ImageUnify
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            app:unify_image_url_src="https://images.tokopedia.net/img/android/review_reminder/using_review_reminder.png" />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_36"
            android:text="@string/review_reminder_how_to_description_2"
            app:typographyType="body_2" />

    </LinearLayout>

</ScrollView>