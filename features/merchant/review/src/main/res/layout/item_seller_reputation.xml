<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Unify_N0"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="9dp">

    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_32"
            app:typographyType="body_3"
            tools:text="19/10/2019 15:12"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:background="@android:drawable/list_selector_background"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="body_2"
            tools:text="Penjual mengabaikan pesanan"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:background="@android:drawable/list_selector_background"
            android:gravity="center_vertical"
            android:textColor="@color/Unify_N700_32"
            app:typographyType="body_3"
            tools:text="INV/2019018/XIX/X/38239348473"/>

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:maxLines="1"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:drawable/list_selector_background"
        android:gravity="end|center_vertical"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="heading_3"
        app:typographyWeight="reguler"
        tools:text="0" />

</RelativeLayout>