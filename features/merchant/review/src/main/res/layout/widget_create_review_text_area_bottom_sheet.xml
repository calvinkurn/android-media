<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/createReviewBottomSheetEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        android:layout_above="@id/incentiveHelperTypography" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/incentiveHelperTypography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_N50"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:typographyType="body_3" />

</RelativeLayout>