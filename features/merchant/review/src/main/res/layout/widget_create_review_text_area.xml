<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/createReviewTextAreaContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:layout_marginStart="@dimen/layout_lvl2"
    android:layout_marginEnd="@dimen/layout_lvl2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/createReviewEditText"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/layout_lvl0"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@android:color/transparent"
        android:hint="@string/review_create_text_area_placeholder"
        android:textColor="@color/Neutral_N700_96"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/fontSize_lvl4"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/createReviewExpandButton"/>

    <ImageView
        android:id="@+id/createReviewExpandButton"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl1"
        android:layout_marginRight="@dimen/layout_lvl1"
        android:layout_marginBottom="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_expand" />

</androidx.constraintlayout.widget.ConstraintLayout>