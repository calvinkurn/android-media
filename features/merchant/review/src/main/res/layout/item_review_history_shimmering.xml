<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/review_history_shimmer_title"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl8"
        android:layout_marginRight="@dimen/layout_lvl8"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/shimmer_custom_color"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/review_history_shimmer_subtitle"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl8"
        android:layout_marginRight="@dimen/layout_lvl8"
        app:corners="8"
        app:custom_color="@color/shimmer_custom_color"
        app:layout_constraintStart_toStartOf="@id/review_history_shimmer_title"
        app:layout_constraintEnd_toEndOf="@id/review_history_shimmer_title"
        app:layout_constraintTop_toBottomOf="@id/review_history_shimmer_title" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/review_history_shimmer_body"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl7"
        android:layout_marginRight="@dimen/layout_lvl7"
        app:corners="8"
        app:custom_color="@color/shimmer_custom_color"
        app:layout_constraintStart_toStartOf="@id/review_history_shimmer_title"
        app:layout_constraintEnd_toEndOf="@id/review_history_shimmer_title"
        app:layout_constraintTop_toBottomOf="@id/review_history_shimmer_subtitle" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl1"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintTop_toBottomOf="@id/review_history_shimmer_body"/>

</androidx.constraintlayout.widget.ConstraintLayout>