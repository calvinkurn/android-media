<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_8">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_img"
        android:layout_width="@dimen/layout_lvl6"
        android:layout_height="@dimen/layout_lvl6"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        android:layout_marginRight="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_img"
        app:layout_constraintTop_toTopOf="@+id/loader_img" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_subtitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl8"
        android:layout_marginRight="@dimen/layout_lvl8"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_img"
        app:layout_constraintTop_toBottomOf="@id/loader_title" />


    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/loader_img_main"
        android:layout_width="@dimen/layout_lvl7"
        android:layout_height="@dimen/layout_lvl7"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_img" />

    <ImageView
        android:id="@+id/review_pending_shimmering_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loader_img_main"
        app:srcCompat="@drawable/create_review_shimmer_stars" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_star"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/layout_lvl6"
        android:layout_marginEnd="@dimen/layout_lvl6"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_pending_shimmering_star" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_star_text"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="@dimen/dp_12"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl5"
        android:layout_marginEnd="@dimen/layout_lvl5"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="@id/loader_star"
        app:layout_constraintStart_toStartOf="@id/loader_star"
        app:layout_constraintTop_toBottomOf="@+id/loader_star" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_body"
        android:layout_width="@dimen/dp_154"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl5"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_star_text" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_review_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_body" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_body_2"
        android:layout_width="@dimen/dp_117"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginLeft="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_review_input" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/loader_review_input_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:corners="8"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_body_2" />

</androidx.constraintlayout.widget.ConstraintLayout>