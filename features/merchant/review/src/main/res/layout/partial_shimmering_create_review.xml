<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_Background"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_title"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_img"
        app:layout_constraintTop_toTopOf="@+id/loader_img" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_subtitle"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:layout_marginTop="8dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/loader_img"
        app:layout_constraintTop_toBottomOf="@id/loader_title" />


    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_img_main"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_img" />

    <ImageView
        android:id="@+id/review_pending_shimmering_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loader_img_main"
        app:srcCompat="@drawable/create_review_shimmer_stars" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_star"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_pending_shimmering_star" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_star_text"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="@id/loader_star"
        app:layout_constraintStart_toStartOf="@id/loader_star"
        app:layout_constraintTop_toBottomOf="@+id/loader_star" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_body"
        android:layout_width="@dimen/dp_154"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_star_text" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_review_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_body" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_body_2"
        android:layout_width="@dimen/dp_117"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_review_input" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_review_input_2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:loader_corner_radius="4dp"
        app:loader_type="rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader_body_2" />

</androidx.constraintlayout.widget.ConstraintLayout>