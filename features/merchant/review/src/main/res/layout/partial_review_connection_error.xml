<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Unify_N0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/review_image_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl5"
        android:layout_marginEnd="@dimen/layout_lvl5"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:src="@drawable/unify_globalerrors_connection"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_error_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_pending_network_error_title"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:gravity="center"
        android:layout_marginStart="@dimen/layout_lvl6"
        android:layout_marginEnd="@dimen/layout_lvl6"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/review_image_error"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_error_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_pending_network_error_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        app:layout_constraintTop_toBottomOf="@id/review_error_title"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/reviewConnectionErrorRetryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_60"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:text="@string/review_pending_network_error_retry_button"
        app:layout_constraintTop_toBottomOf="@id/review_error_subtitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>