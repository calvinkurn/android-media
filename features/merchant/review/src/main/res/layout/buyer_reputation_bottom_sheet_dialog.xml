<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_3"
        android:lineSpacingExtra="8sp"
        android:text="@string/buyer_reputation"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="7sp"
        android:text="@string/buyer_reputation_given_by_seller"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:textColor="@color/unify_N700_32"
        app:typographyType="body_3"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smiley_good"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:maxHeight="@dimen/dp_24"
            android:maxWidth="@dimen/dp_24"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            app:srcCompat="@drawable/review_ic_smiley_good"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/score_good"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/smiley_good"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/Unify_N700_44"
            tools:text="248"
            app:typographyType="body_3" />

        <ImageView
            android:id="@+id/smiley_neutral"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/score_good"
            android:maxHeight="@dimen/dp_24"
            android:maxWidth="@dimen/dp_24"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            app:srcCompat="@drawable/review_ic_smiley_neutral"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/score_netral"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@id/smiley_neutral"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/Unify_N700_44"
            tools:text="2"
            app:typographyType="body_3" />

        <ImageView
            android:id="@+id/smiley_bad"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/score_netral"
            android:maxHeight="@dimen/dp_24"
            android:maxWidth="@dimen/dp_24"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            app:srcCompat="@drawable/review_ic_smiley_bad"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/score_bad"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@id/smiley_bad"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/Unify_N700_44"
            tools:text="0"
            app:typographyType="body_3"
            />

    </RelativeLayout>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/close_button"
        style="@style/Button.Submit.Green"
        android:layout_width="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginBottom="@dimen/dp_16"
        android:lineSpacingExtra="7sp"
        android:text="@string/close"/>

</LinearLayout>