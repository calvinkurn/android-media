<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/review_detail_response_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/review_detail_response_tab"
        android:layout_width="4dp"
        android:layout_height="0dp"
        tools:background="@drawable/rectangle_8"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/reviewDetailResponderName"
        app:layout_constraintBottom_toBottomOf="@id/reviewDetailResponseContent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewDetailResponderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/Unify_N700_96"
        android:layout_marginStart="16dp"
        app:typographyType="body_3"
        app:layout_constraintStart_toEndOf="@id/review_detail_response_tab"
        app:layout_constraintTop_toBottomOf="@id/review_detail_response_divider"
        tools:text="Oleh Sneakers Indonesia"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewDetailResponseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/Unify_N700_68"
        app:typographyType="body_3"
        app:layout_constraintTop_toTopOf="@id/reviewDetailResponderName"
        app:layout_constraintStart_toEndOf="@id/reviewDetailResponderName"
        tools:text="â€¢ Hari ini"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/reviewDetailResponseContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintTop_toBottomOf="@id/reviewDetailResponderName"
        app:typographyType="body_2"
        app:layout_constraintStart_toEndOf="@id/review_detail_response_tab"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Terima kasih sudah berbelanja di toko kami, semoga pengalaman berbelanjanya memuaskan, silakan mampir kembali kalau butuh sesuatu ;)"/>

    

</androidx.constraintlayout.widget.ConstraintLayout>