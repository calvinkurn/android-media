<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ticker.Ticker
        android:id="@+id/ovoPointsTicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:tickerType="announcement"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/reviewPendingSwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl0"
        app:layout_constraintTop_toBottomOf="@id/ovoPointsTicker"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewPendingRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/layout_lvl2" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/partial_review_connection_error"
        android:id="@+id/reviewPendingConnectionError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"/>

    <include layout="@layout/partial_review_empty"
        android:id="@+id/reviewPendingEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"/>

    <include layout="@layout/partial_review_pending_loading"
        android:id="@+id/reviewPendingLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>