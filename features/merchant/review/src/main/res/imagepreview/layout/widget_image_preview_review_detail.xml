<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_gallery_photo_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Unify_Static_Black_68"
        android:paddingStart="@dimen/layout_lvl2"
        android:paddingTop="@dimen/layout_lvl1"
        android:paddingEnd="@dimen/layout_lvl2"
        android:paddingBottom="@dimen/layout_lvl1"
        android:textColor="@color/Unify_Static_White_96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="1/5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Unify_Static_Black_68"
        app:layout_constraintTop_toBottomOf="@id/review_gallery_photo_count">

        <com.tokopedia.reviewcommon.feature.reviewer.presentation.widget.ReviewBasicInfoWidget
            android:id="@+id/review_gallery_basic_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_lvl2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/review_gallery_like_count"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/review_gallery_review"
            android:layout_width="@dimen/layout_lvl0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:paddingStart="@dimen/layout_lvl2"
            android:paddingEnd="@dimen/layout_lvl2"
            android:textColor="@color/Unify_Static_White_96"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/review_gallery_basic_info"
            app:typographyType="body_2" />

        <com.tokopedia.review.common.presentation.widget.ReviewBadRatingReasonWidget
            android:id="@+id/review_image_preview_bad_rating_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/review_gallery_review"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/review_gallery_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_lvl1"
            android:textColor="@color/Unify_Static_White_96"
            app:layout_constraintBottom_toBottomOf="@id/review_gallery_like_icon"
            app:layout_constraintEnd_toStartOf="@id/review_gallery_like_icon"
            app:layout_constraintTop_toTopOf="@id/review_gallery_like_icon"
            app:typographyType="body_2" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/review_gallery_like_icon"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/layout_lvl3"
            app:icon_color_light_enable="@color/Unify_Static_White_96"
            app:icon_enable_state="true"
            app:icon_name="THUMB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>