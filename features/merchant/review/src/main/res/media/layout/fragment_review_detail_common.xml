<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_review_media_gallery_review_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/review_dms_fragment_review_detail_common_background"
    app:layout_constraintBottom_toBottomOf="parent">

    <com.tokopedia.review.feature.media.detail.presentation.widget.SimpleReviewDetailBasicInfo
        android:id="@+id/review_detail_basic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.review.feature.media.detail.presentation.widget.ReviewDetailSupplementaryInfo
        android:id="@+id/review_detail_supplementary_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_detail_basic_info" />

</androidx.constraintlayout.widget.ConstraintLayout>