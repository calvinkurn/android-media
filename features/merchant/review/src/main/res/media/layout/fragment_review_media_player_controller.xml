<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/review_dms_fragment_review_detail_common_background">

    <com.google.android.exoplayer2.ui.PlayerControlView
        android:id="@+id/player_control_view_review_media_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:controller_layout_id="@layout/widget_review_media_gallery_exo_player_control"
        app:layout_constraintBottom_toTopOf="@id/divider_review_media_gallery_bottom_controller"
        app:show_timeout="0" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/divider_review_media_gallery_bottom_controller"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Unify_NN600"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>