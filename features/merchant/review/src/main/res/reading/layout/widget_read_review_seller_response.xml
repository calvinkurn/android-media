<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_reading_respondent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toEndOf="@id/review_reading_respondent_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="bold" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/reading_review_seller_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        android:text="@string/review_reading_seller_label"
        app:labelType="general_light_green"
        app:layout_constraintStart_toEndOf="@id/review_reading_respondent_name"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_reading_response_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toEndOf="@id/reading_review_seller_label"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <View
        android:id="@+id/review_reading_respondent_bar"
        android:layout_width="@dimen/spacing_lvl1"
        android:layout_height="@dimen/layout_lvl0"
        android:background="@color/Unify_N75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_reading_respondent_answer"
        android:layout_width="@dimen/layout_lvl0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl2"
        android:layout_marginEnd="@dimen/layout_lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/review_reading_respondent_name"
        app:layout_constraintTop_toBottomOf="@id/review_reading_respondent_name"
        app:typographyType="body_2" />

</androidx.constraintlayout.widget.ConstraintLayout>