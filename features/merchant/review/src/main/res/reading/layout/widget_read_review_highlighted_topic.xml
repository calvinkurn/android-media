<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/layout_lvl1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/read_review_topic_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_lvl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4,7" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/read_review_highlighted_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        app:layout_constraintStart_toEndOf="@id/read_review_topic_rating"
        app:layout_constraintTop_toTopOf="@id/read_review_topic_rating"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Kualitas Barang" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/read_review_highlighted_topic_review_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintStart_toStartOf="@id/read_review_highlighted_topic_title"
        app:layout_constraintTop_toBottomOf="@id/read_review_highlighted_topic_title"
        app:typographyType="small"
        app:typographyWeight="reguler"
        tools:text="100 ulasan" />


</androidx.constraintlayout.widget.ConstraintLayout>