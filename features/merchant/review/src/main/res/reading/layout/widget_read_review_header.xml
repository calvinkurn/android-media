<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/read_review_rating_star"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rating_star_item" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/read_review_overall_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lvl2"
        app:layout_constraintBottom_toBottomOf="@id/read_review_rating_star"
        app:layout_constraintStart_toEndOf="@id/read_review_rating_star"
        app:layout_constraintTop_toTopOf="@id/read_review_rating_star"
        app:typographyType="heading_1"
        app:typographyWeight="bold"
        tools:text="4.7" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/read_review_maximum_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_lvl2"
        android:text="@string/review_reading_header_maximum_score"
        android:textColor="@color/Unify_N700_32"
        app:layout_constraintBottom_toBottomOf="@id/read_review_overall_rating"
        app:layout_constraintStart_toEndOf="@id/read_review_overall_rating"
        app:typographyType="body_3"
        app:typographyWeight="reguler" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/read_review_satisfaction_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/layout_lvl2"
        app:layout_constraintStart_toEndOf="@id/read_review_maximum_rating"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_5"
        app:typographyWeight="bold"
        tools:text="90% pembeli merasa puas" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/read_review_rating_and_review_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl3"
        app:layout_constraintStart_toEndOf="@id/read_review_maximum_rating"
        app:layout_constraintTop_toBottomOf="@id/read_review_satisfaction_rate"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="20 rating, 10 ulasan" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/read_review_header_chevron_right"
        android:layout_width="@dimen/layout_lvl2"
        android:layout_height="@dimen/layout_lvl2"
        android:layout_marginStart="@dimen/spacing_lvl2"
        app:icon_name="CHEVRON_RIGHT"
        app:layout_constraintBottom_toBottomOf="@id/read_review_satisfaction_rate"
        app:layout_constraintStart_toEndOf="@id/read_review_satisfaction_rate" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/read_review_filter_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/layout_lvl2"
        android:background="@color/Unify_N75"
        app:layout_constraintTop_toBottomOf="@id/read_review_rating_and_review_count" />

    <com.tokopedia.sortfilter.SortFilter
        android:id="@+id/read_review_sort_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginStart="@dimen/layout_lvl2"
        app:sort_filter_relationship="AND"
        app:sort_filter_type="quick"
        app:layout_constraintTop_toBottomOf="@id/read_review_filter_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>