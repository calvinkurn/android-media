<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_credibility_statistic_box_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    android:paddingBottom="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_credibility_statistic_box_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/review_credibility_statistic_box_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.tokopedia.review.feature.credibility.presentation.widget.ReviewCredibilityStatisticWidget
        android:id="@+id/review_credibility_statistics_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/review_credibility_statistics_2"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistic_box_title" />

    <com.tokopedia.review.feature.credibility.presentation.widget.ReviewCredibilityStatisticWidget
        android:id="@+id/review_credibility_statistics_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/review_credibility_statistic_box_guideline"
        app:layout_constraintStart_toStartOf="@id/review_credibility_statistic_box_guideline"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistic_box_title" />

    <com.tokopedia.review.feature.credibility.presentation.widget.ReviewCredibilityStatisticWidget
        android:id="@+id/review_credibility_statistics_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/review_credibility_statistics_2"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistic_box_title" />

</androidx.constraintlayout.widget.ConstraintLayout>