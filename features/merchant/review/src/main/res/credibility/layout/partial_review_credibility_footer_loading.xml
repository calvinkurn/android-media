<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_review_credibility_footer_description_1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_review_credibility_footer_description_2"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loader_review_credibility_footer_description_1"
        app:layout_constraintWidth_percent="0.6"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_review_credibility_footer_cta"
        android:layout_width="176dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loader_review_credibility_footer_description_2"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>