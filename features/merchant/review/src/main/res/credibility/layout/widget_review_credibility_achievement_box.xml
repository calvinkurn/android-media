<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    tools:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_review_credibility_achievement_box_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/bg_review_credibility_statistics_box">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_review_credibility_achievement_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="9dp"
            android:paddingBottom="2dp"
            android:textAlignment="center"
            android:textColor="@color/Unify_NN600"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="paragraph_3"
            tools:text="Karina memang juara! Rank-nya tinggi di Tantangan Ulasan kategori ini:"
            tools:visibility="visible" />

        <include
            android:id="@+id/widget_review_credibility_achievement_1"
            layout="@layout/partial_review_credibility_achievement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/widget_review_credibility_achievement_2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_review_credibility_achievement_label"
            app:layout_constraintWidth_percent="0.3"
            tools:visibility="visible" />

        <include
            android:id="@+id/widget_review_credibility_achievement_2"
            layout="@layout/partial_review_credibility_achievement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/widget_review_credibility_achievement_3"
            app:layout_constraintStart_toEndOf="@id/widget_review_credibility_achievement_1"
            app:layout_constraintTop_toBottomOf="@id/tv_review_credibility_achievement_label"
            app:layout_constraintWidth_percent="0.3"
            tools:visibility="visible" />

        <include
            android:id="@+id/widget_review_credibility_achievement_3"
            layout="@layout/partial_review_credibility_achievement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/widget_review_credibility_achievement_2"
            app:layout_constraintTop_toBottomOf="@id/tv_review_credibility_achievement_label"
            app:layout_constraintWidth_percent="0.3"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_review_credibility_achievement_see_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/widget_review_credibility_achievement_1"
            app:unifyButtonVariant="text"
            tools:text="+3 Pencapaian Lainnya"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_review_credibility_achievement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_credibility_achievement_title"
        android:paddingHorizontal="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="6dp"
        android:textColor="@color/Unify_Static_White"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/layout_review_credibility_achievement_box_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_review_credibility_achievement_box_content"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Juara Ulasan"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>