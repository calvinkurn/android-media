<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tv_review_credibility_footer_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="paragraph_3"
        tools:text="Yuk, lihat juga kontribusi ulasanmu dengan klik tombol di bawah ini. Pelajari Selengkapnya" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/btn_review_credibility_footer_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minWidth="176dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_review_credibility_footer_description"
        app:unifyButtonSize="medium"
        tools:text="Lihat Kontribusimu" />

</androidx.constraintlayout.widget.ConstraintLayout>