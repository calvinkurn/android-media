<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.CardUnify2
        android:id="@+id/card_review_credibility_achievement"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:card_type="clear"
        app:layout_constraintDimensionRatio="96:103"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_review_credibility_achievement_avatar_border">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_review_credibility_achievement_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="103dp"
            android:paddingHorizontal="8dp"
            android:paddingTop="32dp"
            android:paddingBottom="8dp"
            tools:background="@color/Unify_BN400">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_review_credibility_achievement_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="center"
                android:textColor="@color/Unify_Static_White"
                app:layout_constraintBottom_toTopOf="@id/tv_review_credibility_achievement_counter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:typographyType="display_3"
                tools:text="Makanan &amp; Minuman" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_review_credibility_achievement_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/Unify_Static_White"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:typographyType="display_1"
                app:typographyWeight="bold"
                tools:text="2x" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.tokopedia.unifycomponents.CardUnify2>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_review_credibility_achievement_avatar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_review_credibility_achievement_avatar_border"
        app:layout_constraintEnd_toEndOf="@id/iv_review_credibility_achievement_avatar_border"
        app:layout_constraintStart_toStartOf="@id/iv_review_credibility_achievement_avatar_border"
        app:layout_constraintTop_toTopOf="@id/iv_review_credibility_achievement_avatar_border"
        app:unify_image_type="circle" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/iv_review_credibility_achievement_avatar_border"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/border_review_credibility_achievement_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>