<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_review_credibility_header_reviewer_name"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_review_credibility_header_join_date"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginHorizontal="3dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loader_review_credibility_header_reviewer_name"
        app:layout_constraintWidth_percent="0.5"
        app:loader_type="rect" />
</androidx.constraintlayout.widget.ConstraintLayout>