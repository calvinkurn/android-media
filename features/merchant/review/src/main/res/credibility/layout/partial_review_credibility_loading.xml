<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/Unify_Background"
    android:layout_height="match_parent">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/review_credibility_loading_title"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:custom_color="@color/Unify_N50"
        app:corners="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/review_credibility_loading_subtitle"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        app:custom_color="@color/Unify_N50"
        app:corners="8"
        app:layout_constraintEnd_toEndOf="@id/review_credibility_loading_title"
        app:layout_constraintStart_toStartOf="@id/review_credibility_loading_title"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_loading_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/review_credibility_statistics_loading_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_loading_subtitle">

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/review_credibility_statistics_loading_title"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:custom_color="@color/Unify_N50"
            app:corners="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.elyeproj.loaderviewlibrary.LoaderTextView
            android:id="@+id/review_credibility_statistics_loading_subtitle"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            app:custom_color="@color/Unify_N50"
            app:corners="8"
            app:layout_constraintEnd_toEndOf="@id/review_credibility_statistics_loading_title"
            app:layout_constraintStart_toStartOf="@id/review_credibility_statistics_loading_title"
            app:layout_constraintTop_toBottomOf="@id/review_credibility_statistics_loading_title" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/review_credibility_statistic_box_loading_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <include
            android:id="@+id/review_credibility_statistics_loading_1"
            layout="@layout/partial_review_credibility_statistic_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@id/review_credibility_statistics_loading_2"
            app:layout_constraintTop_toBottomOf="@id/review_credibility_statistics_loading_subtitle" />

        <include
            android:id="@+id/review_credibility_statistics_loading_2"
            layout="@layout/partial_review_credibility_statistic_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/review_credibility_statistic_box_loading_guideline"
            app:layout_constraintStart_toStartOf="@id/review_credibility_statistic_box_loading_guideline"
            app:layout_constraintTop_toBottomOf="@id/review_credibility_statistics_loading_subtitle" />

        <include
            android:id="@+id/review_credibility_statistics_loading_3"
            layout="@layout/partial_review_credibility_statistic_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/review_credibility_statistics_loading_2"
            app:layout_constraintTop_toBottomOf="@id/review_credibility_statistics_loading_subtitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/review_credibility_loading_footer"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:custom_color="@color/Unify_N50"
        app:corners="8"
        app:layout_constraintEnd_toEndOf="@id/review_credibility_statistics_loading_box"
        app:layout_constraintStart_toStartOf="@id/review_credibility_statistics_loading_box"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistics_loading_box" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/review_credibility_loading_footer_1"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="11dp"
        app:custom_color="@color/Unify_N50"
        app:corners="8"
        app:layout_constraintEnd_toEndOf="@id/review_credibility_loading_title"
        app:layout_constraintStart_toStartOf="@id/review_credibility_loading_title"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_loading_footer" />


</androidx.constraintlayout.widget.ConstraintLayout>