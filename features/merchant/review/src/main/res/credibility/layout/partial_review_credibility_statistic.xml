<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/review_credibility_statistic_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_type="circle" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_credibility_statistic_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/Unify_N700_96"
        app:layout_constraintEnd_toEndOf="@id/review_credibility_statistic_icon"
        app:layout_constraintStart_toStartOf="@id/review_credibility_statistic_icon"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistic_icon"
        app:typographyType="paragraph_2"
        app:typographyWeight="bold"
        tools:text="7.319" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_credibility_statistic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:minWidth="80dp"
        android:textAlignment="center"
        android:textColor="@color/Unify_NN600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistic_count"
        app:typographyType="paragraph_3"
        tools:text="Rating" />

</androidx.constraintlayout.widget.ConstraintLayout>