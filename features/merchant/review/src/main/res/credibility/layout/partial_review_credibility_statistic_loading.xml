<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/review_credibility_statistic_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:corners="100"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/review_credibility_statistic_loading_count"
        android:layout_width="65dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="@id/review_credibility_statistic_icon"
        app:layout_constraintStart_toStartOf="@id/review_credibility_statistic_icon"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistic_icon" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:id="@+id/review_credibility_statistic_loading_title"
        android:layout_width="54dp"
        android:layout_height="8dp"
        android:layout_marginTop="4dp"
        app:custom_color="@color/Unify_N50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistic_loading_count" />

</androidx.constraintlayout.widget.ConstraintLayout>