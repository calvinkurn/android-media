<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_credibility_statistic_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_corner_radius="50dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_credibility_statistic_loading_count"
        android:layout_width="65dp"
        android:layout_height="12dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="@id/review_credibility_statistic_icon"
        app:layout_constraintStart_toStartOf="@id/review_credibility_statistic_icon"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistic_icon"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/review_credibility_statistic_loading_title"
        android:layout_width="54dp"
        android:layout_height="12dp"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_credibility_statistic_loading_count"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>