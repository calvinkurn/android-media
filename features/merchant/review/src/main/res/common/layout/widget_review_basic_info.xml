<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/review_item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        app:layout_constraintBottom_toBottomOf="@id/review_item_timestamp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/review_item_timestamp"
        tools:srcCompat="@drawable/review_ic_rating_star_five" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl1"
        app:layout_constraintStart_toEndOf="@id/review_item_rating"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="kemarin" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/review_item_reviewer_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        app:unify_image_type="circle"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/name_stats_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/name_stats_wrapper"
        tools:visibility="visible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/name_stats_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/spacing_lvl2"
        app:layout_goneMarginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/review_item_reviewer_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_item_timestamp">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/review_item_reviewer_name"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="wrap"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/review_item_reviewer_stats"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="evy" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/review_item_reviewer_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:textColor="@color/Unify_N700_68"
            app:layout_constraintBottom_toBottomOf="@id/review_item_reviewer_name"
            app:layout_constraintStart_toEndOf="@id/review_item_reviewer_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/review_item_reviewer_name"
            app:layout_constraintVertical_bias="0.0"
            app:typographyType="body_3"
            tools:text="272 Ulasan Lengkap &amp; 999 terbantu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_item_variant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl2"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:textColor="@color/Unify_N700_68"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_stats_wrapper"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        tools:text="Varian: Green"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>