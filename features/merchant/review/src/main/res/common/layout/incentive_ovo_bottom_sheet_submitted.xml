<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/layout_lvl2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/incentiveOvoSubmittedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl4"
        android:layout_marginEnd="@dimen/layout_lvl4"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/incentiveOvoSubmittedTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/layout_lvl1"
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        app:layout_constraintTop_toBottomOf="@id/incentiveOvoSubmittedImage"
        tools:text="Mau dapat OVO Points?"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/incentiveOvoSubmittedSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl3"
        android:maxWidth="@dimen/max_width_incentive_ovo_subtitle"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center"
        app:typographyType="body_1"
        app:typographyWeight="reguler"
        android:textColor="@color/Unify_N700_68"
        app:layout_constraintTop_toBottomOf="@id/incentiveOvoSubmittedTitle"
        tools:text="Bantu penjual dengan kasih ulasan lengkap dan dapatkan OVO Points!" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/incentiveOvoSendAnother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_create_send_another"
        android:layout_marginTop="@dimen/layout_lvl3"
        app:unifyButtonSize="medium"
        app:layout_constraintTop_toBottomOf="@id/incentiveOvoSubmittedSubtitle"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/incentiveOvoLater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review_create_later"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:visibility="gone"
        app:unifyButtonVariant="text"
        app:unifyButtonSize="medium"
        app:layout_constraintTop_toBottomOf="@id/incentiveOvoSendAnother"/>

</androidx.constraintlayout.widget.ConstraintLayout>