<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_gallery_photo_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl1"
        android:layout_marginEnd="@dimen/layout_lvl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3"
        tools:text="1/5" />

    <com.tokopedia.review.common.presentation.widget.ReviewBasicInfoWidget
        android:id="@+id/review_gallery_basic_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_gallery_photo_count" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_gallery_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_gallery_basic_info" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/review_gallery_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_lvl1"
        app:layout_constraintBottom_toBottomOf="@id/review_gallery_like_icon"
        app:layout_constraintEnd_toStartOf="@id/review_gallery_like_icon"
        app:layout_constraintTop_toTopOf="@id/review_gallery_like_icon" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/review_gallery_like_icon"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/layout_lvl3"
        android:layout_marginEnd="@dimen/layout_lvl3"
        app:icon_name="THUMB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_gallery_photo_count" />

</androidx.constraintlayout.widget.ConstraintLayout>