<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tokopedia.review.common.presentation.widget.ReviewBasicInfoWidget
            android:id="@+id/review_gallery_expanded_review_detail_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/review_gallery_expanded_review"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/layout_lvl2"
            android:layout_marginTop="@dimen/spacing_lvl2"
            android:layout_marginEnd="@dimen/layout_lvl2"
            android:layout_weight="1"
            android:paddingBottom="@dimen/layout_lvl2"
            android:scrollbars="vertical"
            app:typographyType="body_3" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>