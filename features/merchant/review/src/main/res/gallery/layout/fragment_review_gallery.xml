<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_gallery_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Unify_Static_Black">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/review_gallery_close_button"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            app:icon_color_light_enable="@color/Unify_Static_White_96"
            app:icon_enable_state="true"
            app:icon_name="CLOSE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/review_gallery_menu_button"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_12"
            app:icon_color_light_enable="@color/Unify_Static_White_96"
            app:icon_enable_state="true"
            app:icon_name="MENU_KEBAB_VERTICAL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_gallery_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:layout_marginTop="@dimen/layout_lvl6"
            android:paddingBottom="@dimen/layout_lvl8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/review_gallery_close_button" />

        <com.tokopedia.review.feature.gallery.presentation.widget.ReviewGalleryReviewDetailWidget
            android:id="@+id/review_gallery_review_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/layout_lvl2"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>