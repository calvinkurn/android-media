<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/review_gallery_close_button"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:icon_name="CLOSE"/>

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/review_gallery_menu_button"
        android:layout_width="@dimen/layout_lvl3"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon_name="MENU_KEBAB_VERTICAL"/>

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/review_gallery_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_lvl6"
        app:layout_constraintTop_toBottomOf="@id/review_gallery_close_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>