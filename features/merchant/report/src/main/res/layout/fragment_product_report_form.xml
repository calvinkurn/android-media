<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/report_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/sp_4"
                app:fontSize="small"
                tools:text="Produk mengandung unsur promosi situs, toko, atau pihak di luar Tokopedia."/>

            <com.tokopedia.design.text.TkpdHintTextInputLayout
                android:id="@+id/textInputLayoutReport"
                android:layout_marginTop="@dimen/dp_16"
                style="@style/HintTextInputLayout"
                android:hint="@string/product_label_product_report"
                app:counterEnabled="true"
                app:counterMaxLength="@integer/product_max_character_report">

                <EditText
                    android:id="@+id/edit_text_report"
                    style="@style/EditText"
                    android:hint="@string/product_hint_product_report"
                    android:inputType="text"
                    android:maxLength="@integer/product_max_character_report" />

            </com.tokopedia.design.text.TkpdHintTextInputLayout>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_product_report_upload_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:lineSpacingExtra="@dimen/sp_4"
                tools:text="Foto bukti Harga Eceran Tertinggi (0/3)"
                app:fontSize="small"
                app:weight="medium"/>

            <com.tokopedia.design.component.TextViewCompat
                android:id="@+id/txt_product_report_upload_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:lineSpacingExtra="@dimen/sp_6"
                tools:text="Upload foto yang membuktikan Harga Eceran Tertinggi produk."
                app:fontSize="micro"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_uploaded_foto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                tools:visibility="gone"/>

            <Button android:id="@+id/btn_add_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/product_report_upload_foto"
                android:textColor="@color/tkpd_main_green"
                android:layout_marginTop="@dimen/dp_16"
                android:textSize="@dimen/sp_14"
                android:textAllCaps="false"
                android:background="@drawable/report_bg_button_white_green_border"/>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/report_bg_shadow_top"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorLink="@color/tkpd_main_green"
            android:layout_marginTop="@dimen/dp_10"
            app:fontSize="micro"
            tools:text="@string/product_report_see_all_types"/>

        <com.tokopedia.design.component.ButtonCompat
            android:id="@+id/btn_lapor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/label_lapor"
            app:buttonCompatType="primary"
            app:buttonCompatSize="big"
            app:buttonCompatTextAllCaps="false"/>

    </LinearLayout>

</LinearLayout>