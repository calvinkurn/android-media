<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="32dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingRight="16dp"
    android:paddingEnd="16dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorLink="@color/Unify_G500"
        android:textColor="@color/Unify_N700_96"
        app:typographyWeight="reguler"
        app:typographyType="body_3"
        tools:text="@string/product_report_see_all_types"/>

    <com.tokopedia.design.component.ButtonCompat
        android:id="@+id/btn_lapor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_lapor"
        android:enabled="false"
        app:buttonCompatType="primary"
        app:buttonCompatSize="big"
        app:buttonCompatTextAllCaps="false"/>

</LinearLayout>