<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.report.view.customview.HelperTextInputLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textInputLayoutReport"
    android:paddingTop="@dimen/dp_12"
    android:paddingLeft="@dimen/dp_16"
    android:paddingStart="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    style="@style/HintTextInputLayout"
    android:hint="@string/product_label_product_report"
    app:helperText="@string/product_helper_product_report"
    app:hintTextAppearance="@style/TextInputLayout.HintText">

    <EditText
        android:id="@+id/edit_text_report"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:textColor="@color/Unify_N700_96"
        android:textColorHint="@color/Unify_N700_96"
        android:inputType="text"
        android:maxLength="@integer/product_max_character_report"
        android:focusable="false"/>

</com.tokopedia.report.view.customview.HelperTextInputLayout>