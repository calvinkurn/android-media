<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_margin="@dimen/dp_16">

    <View android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_card_icon"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_card_icon"
        app:layout_constraintRight_toRightOf="@+id/dialog_card_icon"
        app:layout_constraintTop_toTopOf="@+id/dialog_card_icon"
        app:layout_constraintVertical_bias="0.8" />

    <View
        android:id="@+id/dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:background="@drawable/bg_rounded_chat_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.v7.widget.CardView android:id="@+id/dialog_card_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/dp_180"
            android:maxWidth="@dimen/dp_180"
            android:minHeight="@dimen/dp_80"
            android:minWidth="@dimen/dp_80"
            tools:src="@drawable/ic_badge_authorize"/>

    </android.support.v7.widget.CardView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/dialog_card_icon"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_bg"
        app:layout_constraintStart_toStartOf="@+id/dialog_bg"
        app:layout_constraintRight_toRightOf="@+id/dialog_bg"
        app:layout_constraintEnd_toEndOf="@+id/dialog_bg"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_bg">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Neutral_N700"
            android:alpha="0.96"
            android:singleLine="true"
            android:ellipsize="middle"
            app:typographyType="heading_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Put Some Title"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/dialog_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/Neutral_N700"
            android:alpha="0.44"
            android:maxLines="@integer/int_3"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_16"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Dengan klik “Lapor”, saya menyatakan bahwa segala informasi yang dilaporkan memang benar"/>

        <Button android:id="@+id/dialog_btn_secondary"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/report_bg_button_white_greenborder"
            android:textColor="@color/tkpd_main_green"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:visibility="gone"
            tools:text="CTA Here"
            app:layout_constraintTop_toBottomOf="@+id/dialog_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dialog_btn_primary"
            app:layout_constraintEnd_toStartOf="@+id/dialog_btn_primary"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <Button android:id="@+id/dialog_btn_primary"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/bg_button_green"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_4"
            tools:text="CTA Here"
            app:layout_goneMarginTop="@dimen/dp_32"
            app:layout_goneMarginLeft="0dp"
            app:layout_goneMarginStart="0dp"
            app:layout_constraintTop_toTopOf="@+id/dialog_btn_secondary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/dialog_btn_secondary"
            app:layout_constraintStart_toEndOf="@+id/dialog_btn_secondary"/>

        <Button android:id="@+id/dialog_btn_secondary_long"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_32"
            android:background="@color/white"
            android:textColor="@color/Neutral_N400"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/dp_8"
            android:visibility="gone"
            tools:text="CTA Here"
            app:layout_constraintTop_toBottomOf="@+id/dialog_btn_primary"
            app:layout_constraintRight_toRightOf="@+id/dialog_btn_primary"
            app:layout_constraintEnd_toEndOf="@+id/dialog_btn_primary"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_btn_primary"
            app:layout_constraintStart_toStartOf="@+id/dialog_btn_primary"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>