<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingBottom="8dp"
    tools:background="#CC000000">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_review_detail_variant"
        android:layout_width="56dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_review_detail_review_first_row"
        android:layout_width="324dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_review_detail_variant"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_review_detail_review_second_row"
        android:layout_width="324dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_review_detail_review_first_row"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/shimmer_review_detail_review_third_row"
        android:layout_width="276dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_review_detail_review_second_row"
        app:loader_type="rect" />

</androidx.constraintlayout.widget.ConstraintLayout>