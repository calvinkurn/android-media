        <item name="tabTheme">@style/TabBar.Green</item>
        <item name="titleTextAppearance">@style/TitleTextAppearance.Green</item>
    </style>

    <style name="SellerToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="subtitleTextAppearance">@style/SubTitleTextAppearance</item>
    </style>

    <style name="Toolbar.Seller.Green" parent="SellerToolbar">
        <item name="actionModeBackground">@color/tkpd_main_green</item>
        <item name="android:actionModeBackground">@color/tkpd_main_green</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:actionMenuTextColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_material_dark</item>
    </style>

