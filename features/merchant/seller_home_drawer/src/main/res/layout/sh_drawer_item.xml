<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:background="@drawable/sh_selectable_white_background"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/drawer_icon"
        android:layout_height="@dimen/drawer_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:padding="@dimen/padding_vs"
        />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="New Text"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/black_70"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon" />

    <TextView
        android:id="@+id/notif"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/drawer_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLength="4"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_marginEnd="@dimen/margin_med" />
    <TextView
        android:id="@+id/new_drawer_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:text="BARU"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/padding_ms"
        android:textSize="@dimen/fontvvvs"
        android:paddingRight="@dimen/padding_ms"
        android:paddingTop="@dimen/padding_vvs"
        android:paddingBottom="@dimen/padding_vvs"
        android:background="@drawable/sh_notif_red"
        android:visibility="gone" />
</RelativeLayout>