<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="@drawable/selectable_white_background"
    android:id="@+id/drawer_shop"
    android:clickable="true"
    >
    <RelativeLayout
        android:layout_width="@dimen/drawer_size"
        android:layout_height="@dimen/drawer_item_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_vs">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/drawer_icon"
            android:layout_height="@dimen/drawer_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@+id/icon"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/sublabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toko saya"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/text_size_xxsmall"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/teal_500"
                />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
