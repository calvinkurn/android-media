<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:background="@drawable/selectable_white_background"
    android:clickable="true"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/drawer_icon"
        android:layout_height="@dimen/drawer_icon"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_small"
        android:padding="@dimen/padding_vs"
        tools:src="@drawable/forums" />

    <TextView
        android:id="@+id/toggle_notif"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/icon"
        android:layout_alignRight="@+id/icon"
        android:layout_alignTop="@+id/icon"
        android:background="@drawable/red_circle_small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_toRightOf="@+id/icon"
        android:fontFamily="sans-serif-medium"
        android:text="New Text"
        android:textColor="@color/black_70"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/arrow"
        android:background="@drawable/border"
        android:padding="@dimen/padding_vs"
        android:text="99+"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_med"
        android:layout_marginRight="@dimen/margin_med"
        android:padding="@dimen/padding_vs"
        tools:src="@drawable/right_arrow" />

</RelativeLayout>