<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="@dimen/dp_1"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.topads.sdk.view.ImpressedImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:corner_radius="0dp"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/textName"
                style="@style/TextView.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/charcoal_grey_88"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Nama"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextView"
                    android:textStyle="bold"
                    android:textColor="@color/discountTextColor"
                    android:textSize="@dimen/sp_10"
                    android:background="@drawable/discount_text_background"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_2"
                    />

                <TextView
                    android:id="@+id/textSlashedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    style="@style/TextView"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/charcoal_grey_40"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textPrice"
                android:textColor="@color/product_card_price_text_color"
                style="@style/TextView.Small.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                tools:text="Harga"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/topAdsIcon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            app:srcCompat="@drawable/ic_topads_product_card"
            android:scaleType="fitXY"
            android:background="@drawable/top_ads_icon_product_card_background"
            android:layout_alignBottom="@id/contentContainer"
            android:layout_marginBottom="@dimen/dp_8"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"/>

        <ImageView
            android:id="@+id/btn_wishlist"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            app:srcCompat="@drawable/ic_wishlist_product_card"
            android:scaleType="fitXY"
            android:padding="@dimen/dp_6"
            android:background="@drawable/wishlist_icon_product_card_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>