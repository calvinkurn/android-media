<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewGimmick"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:typographyType="small"
        tools:typographyWeight="bold"
        tools:text="Best Seller"
        tools:textColor="#ff8b00"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewProductName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/charcoal_grey_96"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewGimmick"
        app:layout_goneMarginTop="@dimen/dp_0"
        app:typographyType="body_3"
        tools:text="Product Name"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/labelDiscount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:labelType="general_light_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewProductName"
        tools:text="20%"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewSlashedPrice"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/charcoal_grey_44"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/labelDiscount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/labelDiscount"
        app:layout_constraintTop_toTopOf="@id/labelDiscount"
        app:typographyType="small"
        tools:text="Rp8.499.000"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/labelPrice"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_4"
        android:visibility="gone"
        app:labelType="general_light_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewProductName"
        tools:visibility="gone"
        tools:text="Cashback" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="textViewSlashedPrice,labelDiscount,labelPrice" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewPrice"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/charcoal_grey_96"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrierPromo"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp7.999.000"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageShopBadge"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_5"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPrice"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewShopLocation"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/charcoal_grey_68"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageShopBadge"
        app:layout_constraintTop_toBottomOf="@id/textViewPrice"
        app:layout_goneMarginStart="@dimen/dp_0"
        app:layout_goneMarginLeft="@dimen/dp_0"
        app:typographyType="body_3"
        tools:text="Town Location"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageRatingString"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_3"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewShopLocation"
        app:srcCompat="@drawable/product_card_ic_rating_active"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewRatingString"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="center_vertical"
        android:textColor="@color/charcoal_grey_68"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/imageRatingString"
        app:layout_constraintTop_toBottomOf="@id/textViewShopLocation"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        tools:text="4.5"
        tools:visibility="visible" />

