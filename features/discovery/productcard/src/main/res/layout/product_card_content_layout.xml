    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewReviewCount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="center_vertical"
        android:textColor="@color/charcoal_grey_44"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/textViewRatingString"
        app:layout_constraintTop_toBottomOf="@id/textViewShopLocation"
        app:typographyType="body_3"
        app:layout_goneMarginStart="@dimen/dp_0"
        app:layout_goneMarginLeft="@dimen/dp_0"
        tools:text="(60)"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewCredibility"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewShopLocation"
        tools:typographyType="body_3"
        tools:typographyWeight="bold"
        tools:text="Terjual 122"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierCredibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="imageRatingString,textViewRatingString,textViewReviewCount,textViewCredibility" />

    <ImageView
        android:id="@+id/imageFreeOngkirPromo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_4"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="fitStart"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrierCredibility"
        tools:layout_width="67dp"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewShipping"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_4"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageRatingString"
        tools:visibility="visible"
        tools:typographyType="body_3"
        tools:text="Ongkir Rp11 rb"/>

