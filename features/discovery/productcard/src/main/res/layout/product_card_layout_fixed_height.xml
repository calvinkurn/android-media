<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_1"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tokopedia.topads.sdk.view.ImpressedImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:corner_radius="0dp"
                android:adjustViewBounds="true" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/textShopName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:textColor="@color/charcoal_grey_88"
                android:visibility="gone"
                app:typographyType="small"
                app:typographyWeight="bold"
                tools:text="Shop Name"/>

            <ImageView
                android:id="@+id/shopImage"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:visibility="gone"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/textName"
                android:lines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:textColor="@color/charcoal_grey_88"
                android:maxLines="2"
                android:ellipsize="end"
                app:typographyType="heading_5"
                tools:text="Nama"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.tokopedia.unifycomponents.Label
                    android:id="@+id/textDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/textSlashedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    style="@style/TextView"
                    android:textSize="@dimen/sp_10"
                    android:visibility="invisible"
                    android:textColor="@color/charcoal_grey_40"
                    />

            </LinearLayout>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/textPrice"
                android:textColor="@color/product_card_price_text_color"
                style="@style/TextView.Small.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                tools:text="Harga"/>

            <LinearLayout
                android:id="@+id/shopBadgesContainer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/textPrice"
                app:layout_constraintStart_toStartOf="@id/image"
                android:orientation="horizontal" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_16"
                android:layout_toRightOf="@id/shopBadgesContainer"
                android:layout_toEndOf="@id/shopBadgesContainer"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/product_card_location_text_color"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/textPrice"
                app:layout_constraintStart_toEndOf="@id/shopBadgesContainer"
                app:typographyType="body_3"
                tools:text="Town Location" />

            <LinearLayout
                android:id="@+id/rating_review_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="@dimen/dp_52"
                    android:layout_height="@dimen/dp_10" />

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/reviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/topAdsIcon"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            app:srcCompat="@drawable/ic_topads_product_card"
            android:scaleType="fitXY"
            android:background="@drawable/top_ads_icon_product_card_background"
            android:layout_alignBottom="@id/contentContainer"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"/>

        <ImageView
            android:id="@+id/btnWishlist"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            app:srcCompat="@drawable/ic_wishlist_product_card"
            android:scaleType="fitXY"
            android:padding="@dimen/dp_6"
            android:background="@drawable/wishlist_icon_product_card_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
