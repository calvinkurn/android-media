<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewProductCard"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutProductCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/product_card_padding_bottom"
        tools:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:visibility="visible"
            tools:src="@drawable/ic_topads_small"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <View
            android:id="@+id/outOfStockOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#7031353b"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/imageProduct"
            app:layout_constraintBottom_toBottomOf="@+id/imageProduct"
            app:layout_constraintStart_toStartOf="@+id/imageProduct"
            app:layout_constraintEnd_toEndOf="@+id/imageProduct"/>

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/labelProductStatus"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:gravity="center"
            android:paddingStart="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/imageProduct"
            app:layout_constraintLeft_toLeftOf="@id/imageProduct"
            tools:text="Preorder"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/tv_top_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#5c000000"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:lineSpacingExtra="4sp"
            android:layout_marginEnd="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_marginBottom="@dimen/dp_7"
            android:text="@string/home_flashsale_card_ad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageProduct" />

        <include
            android:id="@+id/productCardContentLayout"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/product_card_content_margin"
            app:layout_constraintStart_toStartOf="@+id/imageProduct"
            app:layout_constraintTop_toBottomOf="@+id/imageProduct"
            app:layout_constraintEnd_toEndOf="@+id/imageProduct"
            layout="@layout/product_card_flashsale_content_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>