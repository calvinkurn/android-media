<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/skeleton_constraintLayoutProductCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_8"
    tools:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/skeleton_imageProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:gravity="center"
        app:layout_constraintDimensionRatio="H,1:1"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:src="@drawable/error_drawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/skeleton_buttonWishlist"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:background="@drawable/product_card_wishlist_icon_background"
        android:padding="@dimen/dp_4"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/product_card_ic_wishlist"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/skeleton_labelPromo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/skeleton_imageProduct"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_imageProduct"
        tools:visibility="visible"
        tools:text="Promo Label" />

    <ImageView
        android:id="@+id/skeleton_imageShop"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/skeleton_imageProduct"
        app:layout_constraintTop_toBottomOf="@id/skeleton_imageProduct"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_imageProduct"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/skeleton_textViewShopName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:textColor="@color/product_card_shop_name_text_color"
        android:visibility="gone"
        app:typographyType="small"
        app:typographyWeight="bold"
        app:layout_constraintLeft_toLeftOf="@id/skeleton_imageProduct"
        app:layout_constraintTop_toBottomOf="@id/skeleton_imageProduct"
        tools:visibility="visible"
        tools:text="Shop Name"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/skeleton_textViewProductName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/product_card_product_name_text_color"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/skeleton_imageProduct"
        app:layout_constraintStart_toStartOf="@id/skeleton_imageProduct"
        app:layout_constraintTop_toBottomOf="@id/skeleton_textViewShopName"
        app:typographyType="heading_5"
        tools:visibility="visible"
        tools:text="Nama" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/skeleton_labelDiscount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:visibility="gone"
        android:gravity="center_vertical"
        app:labelType="general_light_red"
        app:layout_constraintStart_toStartOf="@id/skeleton_imageProduct"
        app:layout_constraintTop_toBottomOf="@id/skeleton_textViewProductName"
        tools:text="100%"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/skeleton_textViewSlashedPrice"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:gravity="center_vertical"
        android:textColor="@color/product_card_slashed_price_text_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/skeleton_labelDiscount"
        app:layout_constraintEnd_toEndOf="@id/skeleton_imageProduct"
        app:layout_constraintStart_toEndOf="@id/skeleton_labelDiscount"
        app:layout_constraintTop_toTopOf="@id/skeleton_labelDiscount"
        app:typographyType="small"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:maxLines="1"
        tools:text="Rp 99999999999999999999999999999999999999999999999999999999999999999999999999999999"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/skeleton_textViewPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_2"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/product_card_price_text_color"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/skeleton_imageProduct"
        app:layout_constraintStart_toStartOf="@id/skeleton_imageProduct"
        app:layout_constraintTop_toBottomOf="@id/skeleton_labelDiscount"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp 9999999999999999999999999999999999999999"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/skeleton_linearLayoutShopBadges"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:visibility="gone"
        android:paddingTop="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/skeleton_textViewPrice"
        app:layout_constraintStart_toStartOf="@id/skeleton_imageProduct"
        android:orientation="horizontal"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/skeleton_textViewShopLocation"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/product_card_location_text_color"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/skeleton_textViewPrice"
        app:layout_constraintStart_toEndOf="@id/skeleton_linearLayoutShopBadges"
        app:layout_constraintEnd_toEndOf="@id/skeleton_imageProduct"
        app:typographyType="body_3"
        tools:visibility="visible"
        tools:text="Town Location" />

    <LinearLayout
        android:id="@+id/skeleton_linearLayoutImageRating"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/skeleton_imageProduct"
        app:layout_constraintTop_toBottomOf="@id/skeleton_textViewShopLocation"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/skeleton_imageViewRating1"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/product_card_ic_rating_active" />

        <ImageView
            android:id="@+id/skeleton_imageViewRating2"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/product_card_ic_rating_active" />

        <ImageView
            android:id="@+id/skeleton_imageViewRating3"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/product_card_ic_rating_active" />

        <ImageView
            android:id="@+id/skeleton_imageViewRating4"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/product_card_ic_rating_active" />

        <ImageView
            android:id="@+id/skeleton_imageViewRating5"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/product_card_ic_rating_active" />

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/skeleton_textViewReviewCount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:textColor="@color/product_card_review_count_text_color"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/skeleton_linearLayoutImageRating"
        app:layout_constraintTop_toBottomOf="@id/skeleton_textViewShopLocation"
        app:typographyType="body_3"
        tools:visibility="visible"
        tools:text="(3000)" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/skeleton_labelCredibility"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/skeleton_imageProduct"
        app:layout_constraintTop_toBottomOf="@id/skeleton_textViewShopLocation"
        tools:visibility="gone"
        tools:text="Credibility Label" />

    <ImageView
        android:id="@+id/skeleton_imageFreeOngkirPromo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:gravity="center"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/skeleton_imageProduct"
        app:layout_constraintTop_toBottomOf="@id/skeleton_linearLayoutImageRating"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/skeleton_labelOffers"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/skeleton_imageFreeOngkirPromo"
        app:layout_constraintLeft_toLeftOf="@id/skeleton_imageProduct"
        tools:visibility="visible"
        tools:text="Offers Label" />

    <ImageView
        android:id="@+id/skeleton_imageTopAds"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/skeleton_imageFreeOngkirPromo"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/product_card_v2_ic_topads"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/skeleton_textViewAddToCart"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_8"
        android:background="@drawable/product_card_bg_button_atc"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="@string/product_card_text_add_to_cart_grid"
        android:textAllCaps="false"
        android:textColor="@color/orange_red"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skeleton_imageFreeOngkirPromo"
        app:typographyType="heading_6"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>