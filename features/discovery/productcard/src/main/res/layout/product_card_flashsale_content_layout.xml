<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPdpView"
        android:layout_width="@dimen/product_card_flashsale_pdpcount_height"
        android:layout_height="@dimen/product_card_flashsale_pdpcount_height"
        android:layout_marginBottom="@dimen/product_card_flashsale_pdpcount_marginbottom"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pdp_view"
        app:layout_constraintBottom_toTopOf="@+id/tvPdpView"
        tools:visibility="visible"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvPdpView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/product_card_flashsale_pdpcount_height"
        android:layout_marginLeft="@dimen/dp_2"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ivPdpView"
        app:layout_constraintTop_toTopOf="@+id/ivPdpView"
        app:layout_constraintBottom_toBottomOf="@+id/ivPdpView"
        app:typographyType="small"
        android:textColor="@color/charcoal_grey_68"
        tools:text="989jt orang"
        tools:visibility="visible"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewProductName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/product_card_flashsale_text_view_product_name_margin_bottom"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/charcoal_grey_96"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPdpView"
        app:layout_constraintBottom_toTopOf="@+id/labelDiscount"
        app:layout_goneMarginTop="@dimen/product_card_text_view_product_name_gone_margin_top"
        app:typographyType="body_3"
        tools:text="Product Name"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.Label
        android:id="@+id/labelDiscount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/product_card_label_discount_height"
        android:layout_marginBottom="@dimen/product_card_flashsale_label_discount_margin_bottom"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:labelType="general_light_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewProductName"
        app:layout_constraintBottom_toTopOf="@+id/textViewPrice"
        tools:text="20%"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewSlashedPrice"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/charcoal_grey_44"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/labelDiscount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/labelDiscount"
        app:layout_constraintTop_toTopOf="@id/labelDiscount"
        app:typographyType="small"
        tools:text="Rp8.499.000"
        tools:visibility="visible" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewPrice"
        android:layout_width="0dp"
        android:layout_height="@dimen/product_card_text_view_price_height"
        android:layout_marginBottom="@dimen/product_card_flashsale_text_view_price_margin_bottom"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/charcoal_grey_96"
        android:visibility="gone"
        android:gravity="center_vertical"
        app:layout_goneMarginBottom="@dimen/product_card_flashsale_text_view_price_gone_margin_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSlashedPrice"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:typographyType="body_2"
        app:typographyWeight="bold"
        tools:text="Rp7.999.000"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_card_flashsale_progressbar_height"
        android:layout_marginBottom="@dimen/product_card_flashsale_progressbar_marginbottom"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbar_flashsale"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrice"
        app:layout_constraintBottom_toTopOf="@+id/tvLabel"
        android:max="100"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/product_card_flashsale_label_height"
        android:src="@drawable/ic_pdp_view"
        android:textStyle="bold"
        android:textColor="@color/charcoal_grey_68"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:typographyType="small"
        app:typographyWeight="bold"
        tools:text="989jt orang"/>

</androidx.constraintlayout.widget.ConstraintLayout>