<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewProductCard"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutProductCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_6"
        tools:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewImageProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.tokopedia.design.image.SquareImageView
                android:id="@+id/imageProduct"
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_96"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_height="96dp"
                tools:src="@color/colorPink"
                tools:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/labelPromo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewImageProduct"
            app:layout_constraintLeft_toLeftOf="@+id/cardViewImageProduct"
            tools:text="Promo Label"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/buttonWishlist"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/product_card_wishlist_icon_background"
            android:padding="@dimen/dp_4"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/product_card_ic_wishlist"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewShopName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/product_card_shop_name_text_color"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/cardViewImageProduct"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="small"
            app:typographyWeight="bold"
            tools:text="Shop Name"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/product_card_product_name_text_color"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/cardViewImageProduct"
            app:layout_constraintRight_toLeftOf="@+id/buttonWishlist"
            app:layout_constraintTop_toBottomOf="@+id/textViewShopName"
            app:typographyType="heading_5"
            tools:text="Nama"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/labelDiscount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:labelType="general_light_red"
            app:layout_constraintLeft_toRightOf="@+id/cardViewImageProduct"
            app:layout_constraintTop_toBottomOf="@+id/textViewProductName"
            tools:text="100%"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewSlashedPrice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:gravity="center_vertical"
            android:textColor="@color/product_card_slashed_price_text_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/labelDiscount"
            app:layout_constraintStart_toEndOf="@+id/labelDiscount"
            app:layout_constraintTop_toTopOf="@+id/labelDiscount"
            app:typographyType="small"
            tools:text="95000"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewPrice"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:textColor="@color/product_card_price_text_color"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/cardViewImageProduct"
            app:layout_constraintRight_toLeftOf="@+id/buttonWishlist"
            app:layout_constraintTop_toBottomOf="@+id/labelDiscount"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            tools:text="Harga"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearLayoutShopBadges"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_1"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/cardViewImageProduct"
            app:layout_constraintTop_toBottomOf="@+id/textViewPrice"
            tools:visibility="visible" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewShopLocation"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/product_card_location_text_color"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/buttonWishlist"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutShopBadges"
            app:layout_constraintTop_toBottomOf="@+id/textViewPrice"
            app:typographyType="body_3"
            tools:text="Town Location"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearLayoutImageRating"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/cardViewImageProduct"
            app:layout_constraintTop_toBottomOf="@+id/textViewShopLocation"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/imageViewRating1"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/product_card_ic_rating_active" />

            <ImageView
                android:id="@+id/imageViewRating2"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/product_card_ic_rating_active" />

            <ImageView
                android:id="@+id/imageViewRating3"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/product_card_ic_rating_active" />

            <ImageView
                android:id="@+id/imageViewRating4"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/imageViewRating5"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/textViewReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:gravity="center_vertical"
            android:textColor="@color/product_card_review_count_text_color"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutImageRating"
            app:layout_constraintTop_toBottomOf="@+id/textViewShopLocation"
            app:typographyType="body_3"
            tools:text="(3000)"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/labelCredibility"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/cardViewImageProduct"
            app:layout_constraintTop_toBottomOf="@+id/textViewShopLocation"
            tools:text="Credibility Label"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageFreeOngkirPromo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/cardViewImageProduct"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutImageRating"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.Label
            android:id="@+id/labelOffers"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/cardViewImageProduct"
            app:layout_constraintTop_toBottomOf="@+id/imageFreeOngkirPromo"
            tools:text="Offers Label"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageTopAds"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/product_card_v2_ic_topads"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/textViewAddToCart"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text="@string/wishlist_add_to_cart"
            android:textAllCaps="false"
            android:textColor="@color/orange_red"
            android:visibility="gone"
            app:layout_goneMarginLeft="@dimen/dp_8"
            app:layout_goneMarginStart="@dimen/dp_8"
            app:unifyButtonVariant="ghost"
            app:unifyButtonType="transaction"
            app:unifyButtonSize="small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/deleteAction"
            app:layout_constraintTop_toBottomOf="@+id/barrier"
            app:typographyType="heading_6"
            tools:visibility="visible" />

        <FrameLayout
            android:id="@+id/deleteAction"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/productcard_module_bg_button_delete"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:padding="@dimen/dp_7"
            android:tint="@color/Neutral_N400"
            android:visibility="gone"
            app:layout_goneMarginLeft="@dimen/dp_8"
            app:layout_goneMarginStart="@dimen/dp_8"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAddToCart"
            app:layout_constraintEnd_toStartOf="@+id/textViewAddToCart"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewAddToCart"
            tools:visibility="visible">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:tint="@color/Neutral_N400"
                app:srcCompat="@drawable/ic_system_action_delete_black_24"/>
        </FrameLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="buttonWishlist,imageFreeOngkirPromo,textViewShopName,cardViewImageProduct,linearLayoutShopBadges,linearLayoutImageRating,labelCredibility,labelDiscount,textViewPrice,labelOffers,labelPromo,textViewShopLocation,textViewProductName,textViewSlashedPrice,textViewReviewCount" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>