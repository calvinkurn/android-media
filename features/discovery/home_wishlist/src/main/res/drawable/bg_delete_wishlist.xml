<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke android:color="#33000000"
                android:width="1dp"/>
            <padding
                android:left="0dp"
                android:bottom="-1dp"
                android:right="0dp"
                android:top="2dp"/>
        </shape>
        <shape>
            <stroke android:color="#26000000"
                android:width="3dp"/>
            <padding
                android:left="0dp"
                android:bottom="-1dp"
                android:right="0dp"
                android:top="3dp"/>
        </shape>
        <shape>
            <stroke android:color="#1A000000"
                android:width="4dp"/>
            <padding
                android:left="0dp"
                android:bottom="-1dp"
                android:right="0dp"
                android:top="3dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</layer-list>