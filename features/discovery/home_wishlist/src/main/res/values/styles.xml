<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Wishlist.Theme.White" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarTheme">@style/Toolbar.Wishlist</item>
    </style>

    <style name="Toolbar.Wishlist" parent="Toolbar.White">
        <item name="android:background">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:actionMenuTextColor">#03AC0E</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CheckBox.Wishlist" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">#03AC0E</item>
    </style>
    <style name="Wishlist.TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>