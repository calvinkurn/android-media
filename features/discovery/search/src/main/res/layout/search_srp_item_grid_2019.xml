<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productCardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_8"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8">

        <com.tokopedia.topads.sdk.view.ImpressedImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@color/red_100" />

        <RelativeLayout
            android:id="@+id/wishlistButtonContainer"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/search_circle_white">

            <ImageView
                android:id="@+id/wishlistButton"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/ic_wishlist"
                android:layout_centerInParent="true"
                android:contentDescription="@string/image_description" />

        </RelativeLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productImage"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/sp_5"
            android:maxLines="2"
            android:textColor="@color/product_card_title_black"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            app:typographyType="heading_5"
            tools:text="Nexus 5X 32 GB sedia carbon black, ice blue,  pure white dan juga warna rose gold" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/sp_5"
            android:textColor="@color/orange_red"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            tools:text="Rp 3.121.500" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceTextView"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/product_card_grey"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:text="Town Location"/>

        <LinearLayout
            android:id="@+id/ratingReviewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationTextView"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ratingImage"
                android:layout_width="@dimen/dp_51"
                android:layout_height="@dimen/dp_10" />

            <TextView
                android:id="@+id/reviewCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginStart="@dimen/dp_4"
                android:textColor="@color/product_card_grey"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <com.tokopedia.search.result.presentation.view.widget.Label
            android:id="@+id/bottomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_below="@id/ratingReviewContainer"
            android:textSize="@dimen/sp_10"
            android:padding="@dimen/dp_4"
            app:labelDesign="lightGreen"
            android:text="Test Label" />

        <RelativeLayout
            android:id="@+id/topAdsIconContainer"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/search_rounded_corner_topads"
            android:layout_below="@id/ratingReviewContainer">

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/search_ic_top_ads"
                android:layout_centerInParent="true"
                android:contentDescription="@string/image_description" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>