<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/mpsProductQuickFilterShimmering"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        layout="@layout/search_quick_filter_shimmering_layout" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/mpsProductChooseAddressShimmering"
        android:layout_width="170dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mpsProductQuickFilterShimmering"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/mpsProductShopLogoShimmering"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mpsProductChooseAddressShimmering"
        app:loader_corner_radius="8dp"
        app:loader_type="circle" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/mpsProductShopNameShimmering"
        android:layout_width="170dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toEndOf="@id/mpsProductShopLogoShimmering"
        app:layout_constraintTop_toBottomOf="@id/mpsProductChooseAddressShimmering"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/mpsProductShopLocationShimmering"
        android:layout_width="120dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/mpsProductShopLogoShimmering"
        app:layout_constraintTop_toBottomOf="@id/mpsProductShopNameShimmering"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/mpsProductSeeShopShimmering"
        android:layout_width="86dp"
        android:layout_height="32dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/mpsProductChooseAddressShimmering"
        app:layout_constraintEnd_toEndOf="parent"
        app:loader_corner_radius="8dp"
        app:loader_type="rect" />
    
    <include
        android:id="@+id/mpsProductCarouselShimmering"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mpsProductShopLogoShimmering"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/search_mps_product_carousel_shimmering" />

</androidx.constraintlayout.widget.ConstraintLayout>