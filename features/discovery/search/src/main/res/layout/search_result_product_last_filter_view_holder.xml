<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:card_type="border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <View
            android:id="@+id/searchLastFilterHeaderView"
            android:layout_width="60dp"
            android:layout_height="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/search_last_filter_card_header" />

        <Space
            android:id="@+id/searchLastFilterTopSpace"
            android:layout_width="0dp"
            android:layout_height="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchLastFilterHeaderView" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/searchLastFilterIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            app:icon_name="SORT_FILTER"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchLastFilterTopSpace" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/searchLastFilterTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/Unify_NN600"
            app:layout_constraintStart_toEndOf="@id/searchLastFilterIcon"
            app:layout_constraintTop_toBottomOf="@id/searchLastFilterTopSpace"
            app:layout_constraintEnd_toStartOf="@id/searchLastFilterClose"
            app:typographyType="body_3"
            tools:text="Gunakan lagi filter ini:"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/searchLastFilterClose"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:icon_name="CLOSE"
            app:layout_constraintTop_toBottomOf="@id/searchLastFilterTopSpace"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/searchLastFilterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/Unify_NN950"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            app:layout_constraintStart_toStartOf="@id/searchLastFilterTitle"
            app:layout_constraintTop_toBottomOf="@id/searchLastFilterTitle"
            app:layout_constraintEnd_toEndOf="@id/searchLastFilterTitle"
            tools:text="Bandung, DKI Jakarta, Yogyakarta, Surabaya, Solo,  Kurir Instan, Same Day, Gojek, Gosend, JNE, Bebas Ongkir, Power Merchant, Bandung, DKI Jakarta, Yogyakarta, Surabaya, Solo,  Kurir Instan, Same Day, Gojek, Gosend, JNE, Bebas Ongkir, Power Merchant, "/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/searchLastFilterUseLastFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/search_last_filter_use_filter"
            android:textColor="@color/Unify_GN500"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            app:layout_constraintStart_toStartOf="@id/searchLastFilterTitle"
            app:layout_constraintTop_toBottomOf="@id/searchLastFilterName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify>