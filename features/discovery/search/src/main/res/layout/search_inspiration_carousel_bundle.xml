<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tg_product_bundle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:typographyWeight="bold"
        app:typographyType="display_1"
        tools:text="Beli Paket Bundling, Bebas Ongkir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_bundle"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tg_product_bundle_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/item_product_bundle_multiple_widget"
        android:layout_height="268dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>