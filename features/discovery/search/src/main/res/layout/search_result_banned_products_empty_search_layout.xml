<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/searchResultBannedProductsEmptySearchImage"
        android:layout_width="133dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/search_result_banned_products_empty_search_illustration" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/searchResultBannedProductsEmptySearchTitle"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/banned_products_empty_search_title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/searchResultBannedProductsEmptySearchImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/searchResultBannedProductsEmptySearchMessage"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/searchResultBannedProductsEmptySearchTitle"
        app:layout_constraintStart_toStartOf="@id/searchResultBannedProductsEmptySearchTitle"
        app:layout_constraintEnd_toEndOf="@id/searchResultBannedProductsEmptySearchTitle"
        app:typographyType="body_3"
        tools:text="Android app membatasi pencarian barang bernikotin/tembakau" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/searchResultBannedProductsEmptySearchGoToBrowserButton"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/banned_products_empty_search_go_to_browser_button"
        android:layout_marginTop="@dimen/dp_12"
        android:visibility="gone"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchResultBannedProductsEmptySearchImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonSize="small"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>