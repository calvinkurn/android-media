<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/mpsResultViolationProductsStateImage"
        android:layout_width="140dp"
        android:layout_height="105dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/mpsResultViolationProductsStateTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/search_mps_blacklist_response_state_title"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/mpsResultViolationProductsStateImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/mpsResultViolationProductsStateMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/search_mps_blacklist_response_state_description"
        app:layout_constraintTop_toBottomOf="@id/mpsResultViolationProductsStateTitle"
        app:layout_constraintStart_toStartOf="@id/mpsResultViolationProductsStateTitle"
        app:layout_constraintEnd_toEndOf="@id/mpsResultViolationProductsStateTitle"
        app:typographyType="body_3"/>

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/buttonMPSResultViolation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/search_mps_restricted_response_state_learn_button_text"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mpsResultViolationProductsStateImage"
        app:unifyButtonSize="small"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>