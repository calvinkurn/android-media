<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/guided_search_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/guided_search_text"
        android:layout_alignStart="@+id/guided_search_text"
        android:layout_alignRight="@+id/guided_search_text"
        android:layout_alignEnd="@+id/guided_search_text"
        android:layout_alignTop="@+id/guided_search_text"
        android:layout_alignBottom="@+id/guided_search_text"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="centerCrop"
        tools:src="@drawable/search_guided_back_1" />

    <TextView
        android:id="@+id/guided_search_text"
        style="@style/TextView.Small.White.Bold"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        tools:text="superstar"/>

</RelativeLayout>