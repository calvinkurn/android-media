<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/mpsEmptyStateKeywordImage"
        android:layout_width="127dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/search_mps_empty_state_keyword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/mpsEmptyStateKeywordTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN950"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/search_mps_empty_state_keyword_title"
        app:layout_constraintStart_toEndOf="@id/mpsEmptyStateKeywordImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_1"
        app:typographyWeight="bold" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/mpsEmptyStateKeywordDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/search_mps_empty_state_keyword_description"
        app:layout_constraintStart_toEndOf="@id/mpsEmptyStateKeywordImage"
        app:layout_constraintTop_toBottomOf="@id/mpsEmptyStateKeywordTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_3" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/mpsEmptyStateKeywordButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/search_mps_empty_state_keyword_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mpsEmptyStateKeywordImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonSize="small"/>

</androidx.constraintlayout.widget.ConstraintLayout>