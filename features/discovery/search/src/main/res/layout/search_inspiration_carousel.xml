<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.ContainerUnify
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/inspirationCarousel"
    android:orientation="vertical">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/inspirationCarouselTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inspiration_carousel_title"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/charcoal_grey_96"
        app:typographyType="heading_4"
        android:paddingTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inspirationCarouselOptionList"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inspirationCarouselOptionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_0"
        android:paddingBottom="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@id/inspirationCarouselTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</com.tokopedia.unifycomponents.ContainerUnify>