<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/searchResultGlobalSearchInTokopediaTitle"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="@string/search_result_global_search_text"
        android:ellipsize="end"
        app:typographyType="body_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/searchResultGlobalSearchInTokopediaButton"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/search_result_global_search_button_text"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchResultGlobalSearchInTokopediaTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        app:unifyButtonSize="medium" />

</androidx.constraintlayout.widget.ConstraintLayout>