<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutFreeOngkirShowCase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/free_ongkir_promo_show_case_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutFreeOngkirShowCasePopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:background="@drawable/search_free_ongkir_show_case_popup_rounded_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/freeOngkirPopUpTitle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:text="@string/free_ongkir_promo_show_case_title"
            android:textColor="@color/free_ongkir_promo_show_case_title_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="heading_2"  />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/freeOngkirPopUpDescription"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/free_ongkir_promo_show_case_description"
            app:layout_constraintTop_toBottomOf="@id/freeOngkirPopUpTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="body_2"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/buttonOKFreeOngkir"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/search_button_green_rounded_background"
            android:foreground="?selectableItemBackground"
            android:minHeight="@dimen/dp_40"
            android:textSize="40sp"
            android:text="@string/OK"
            app:layout_constraintTop_toBottomOf="@id/freeOngkirPopUpDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:buttonCompatType="primary"
            app:buttonCompatSize="medium"
            app:typographyType="heading_5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dummyViewForImageFreeOngkir"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_32"
        app:layout_constraintTop_toTopOf="@id/constraintLayoutFreeOngkirShowCasePopUp"
        app:layout_constraintBottom_toTopOf="@id/constraintLayoutFreeOngkirShowCasePopUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageFreeOngkir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search_free_ongkir_show_case_image"
        app:layout_constraintBottom_toTopOf="@+id/dummyViewForImageFreeOngkir"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>