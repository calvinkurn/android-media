<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_retry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/tkpd_bg_color"
    android:orientation="vertical">

    <com.tokopedia.topads.sdk.widget.TopAdsBannerView
        android:id="@+id/banner_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:layout_marginBottom="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/no_result_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_view_empty_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="heading_4"
            android:textColor="@color/font_black_primary_70"
            android:layout_toRightOf="@id/no_result_image"
            android:layout_marginLeft="@dimen/dp_16"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_view_empty_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            android:textColor="@color/font_black_secondary_54"
            android:layout_toRightOf="@id/no_result_image"
            android:layout_below="@id/text_view_empty_title_text"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/dp_16"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/selectedFilterRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_result_image"
            android:layout_marginTop="8dp"
            />

        <com.tokopedia.unifyprinciples.Typography
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_add_promo"
            android:gravity="center"
            android:layout_below="@id/no_result_image"
            android:background="@drawable/search_button_green_rounded_background"
            app:typographyType="heading_6"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"/>

    </RelativeLayout>

    <com.tokopedia.topads.sdk.widget.TopAdsView
        android:id="@+id/topads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:display_type="grid"
        app:ep="product"
        app:items="4" />

</LinearLayout>
