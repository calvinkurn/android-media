<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/optionListCardView"
    android:layout_width="248dp"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp_10">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/optionTitle"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:text="@string/inspiration_carousel_option_title"
            app:typographyType="heading_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/charcoal_grey_96"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/viewAllOption"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/viewAllOption"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:text="@string/inspiration_carousel_option_view_all"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:textColor="@color/green_tokopedia"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toTopOf="@id/optionTitle"
            app:layout_constraintBottom_toBottomOf="@id/optionTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/optionTitle"/>

        <View
            android:id="@+id/viewSeparator"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@color/gray_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/optionTitle" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProductImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            app:cardCornerRadius="@dimen/dp_6"
            app:cardElevation="@dimen/dp_0"
            app:layout_constraintTop_toBottomOf="@id/viewSeparator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/productImage"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/search_inspiration_carousel_error_product_image"/>

        </androidx.cardview.widget.CardView>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/productName"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_8"
            app:typographyType="body_3"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/charcoal_grey_96"
            app:layout_constraintTop_toBottomOf="@id/viewSeparator"
            app:layout_constraintLeft_toRightOf="@id/cardViewProductImage"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="@string/inspiration_carousel_product_name" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/productPrice"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_4"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/charcoal_grey_96"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/productName"
            app:layout_constraintLeft_toRightOf="@id/cardViewProductImage"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="@string/inspiration_carousel_product_price" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/productRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@id/cardViewProductImage"
            app:layout_constraintTop_toBottomOf="@id/productPrice"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/imageViewRating1"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/search_inspiration_carousel_ic_rating_default" />

            <ImageView
                android:id="@+id/imageViewRating2"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageViewRating1"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/search_inspiration_carousel_ic_rating_default" />

            <ImageView
                android:id="@+id/imageViewRating3"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageViewRating2"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/search_inspiration_carousel_ic_rating_default" />

            <ImageView
                android:id="@+id/imageViewRating4"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageViewRating3"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/search_inspiration_carousel_ic_rating_default" />

            <ImageView
                android:id="@+id/imageViewRating5"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageViewRating4"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/search_inspiration_carousel_ic_rating_default"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/productReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            app:typographyType="body_3"
            android:gravity="center_vertical"
            android:textColor="@color/product_card_review_count_text_color"
            app:layout_constraintLeft_toRightOf="@id/productRating"
            app:layout_constraintTop_toTopOf="@id/productRating"
            app:layout_constraintBottom_toBottomOf="@id/productRating"
            tools:text="@string/inspiration_carousel_review_count"
            android:visibility="gone"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
