<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutShopHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tokopedia.topads.sdk.widget.TopAdsBannerView
        android:id="@+id/adsBannerView"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_height="@dimen/dp_90"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewShopCount"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_22"
        android:textColor="@color/shop_total_count_text_color"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:typographyType="heading_5"
        app:layout_constraintTop_toBottomOf="@id/adsBannerView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/shop_total_count"/>

</android.support.constraint.ConstraintLayout>