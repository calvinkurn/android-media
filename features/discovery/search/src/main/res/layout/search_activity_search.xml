<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootSearchResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tokopedia.searchbar.navigation_component.NavToolbar
        android:id="@+id/searchNavigationToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Unify_N0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:toolbarAlwaysShowShadow="false"
        app:toolbarBackButton="back"
        app:toolbarContentType="typeSearchbar"
        app:toolbarInitialTheme="light" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/Unify_N0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleTextColor="@color/Unify_N700_68">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/action_up_btn"
                android:contentDescription="@string/content_desc_search_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/searchTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/search_ic_back" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/searchTextView"
                android:contentDescription="@string/content_desc_searchTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/search_bg_autocomplete_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_28"
                android:paddingTop="8dp"
                android:paddingEnd="@dimen/dp_32"
                android:paddingBottom="8dp"
                android:inputType="none"
                android:focusable="false"
                android:enabled="true"
                android:focusableInTouchMode="true"
                android:maxLines="1"
                android:ellipsize="end"
                app:typographyType="body_2"
                app:typographyWeight="reguler"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/action_up_btn"
                app:layout_constraintRight_toLeftOf="@id/search_home_button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/search_ic_search"
                android:contentDescription="@string/content_desc_search_icon_search"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/searchTextView"
                app:srcCompat="@drawable/search_ic_search" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/search_home_button"
                android:contentDescription="@string/content_desc_search_home_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/searchTextView"
                app:layout_constraintRight_toLeftOf="@id/search_cart_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_product_discovery_home_grayscale_24" />

            <ImageView
                android:id="@+id/search_cart_button"
                android:contentDescription="@string/content_desc_search_cart_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:scaleType="centerInside"
                app:layout_goneMarginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/search_home_button"
                app:layout_constraintRight_toLeftOf="@id/search_change_grid_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/search_ic_cart" />

            <ImageView
                android:id="@+id/search_change_grid_button"
                android:contentDescription="@string/content_desc_search_change_grid_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/search_cart_button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/search_ic_grid" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/searchBottomToolbarBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="toolbar, searchNavigationToolbar" />

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/progressBar"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:visibility="gone"
        app:loader_type="circular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/Unify_N0"
        tools:ignore="MotionLayoutInvalidSceneFileReference"
        app:layout_constraintTop_toBottomOf="@id/searchBottomToolbarBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabSelectedTextColor="@color/Unify_G500"
            app:tabTextColor="@color/Unify_N700_32"
            app:tabTextAppearance="@style/SearchTabLayoutTextStyle"
            app:tabIndicatorColor="@color/Unify_G500"
            app:tabPaddingBottom="12dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/search_top_bar_shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/top_bar_shadow"
            app:layout_constraintTop_toBottomOf="@id/tabs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/search_quick_filter_top_padding"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/search_top_bar_shadow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.search.result.presentation.widget.NonSwipeableViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/search_quick_filter_top_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.constraintlayout.widget.ConstraintLayout>