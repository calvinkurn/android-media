<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="32dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/mpsEmptyStateFilterImage"
        android:layout_width="280dp"
        android:layout_height="210dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:srcCompat="@drawable/search_mps_empty_state_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/mpsEmptyStateFilterTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/Unify_NN950"
        android:text="@string/search_mps_empty_state_filter_title"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/mpsEmptyStateFilterImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="heading_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/mpsEmptyStateFilterDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/Unify_NN600"
        android:text="@string/search_mps_empty_state_filter_description"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/mpsEmptyStateFilterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="display_2" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/mpsEmptyStateFilterResetFilter"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/search_mps_empty_state_filter_reset_button_text"
        app:layout_constraintTop_toBottomOf="@id/mpsEmptyStateFilterDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:unifyButtonSize="medium" />

</androidx.constraintlayout.widget.ConstraintLayout>