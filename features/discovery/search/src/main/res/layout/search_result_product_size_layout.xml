<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/unify_space_12"
    app:card_type="border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/searchProductSizeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/unify_space_12"
            android:layout_marginBottom="@dimen/unify_space_12"
            app:layout_constraintBottom_toTopOf="@id/searchProductSizeOptionRecyclerView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/searchProductSizeClose"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="heading_3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchProductSizeOptionRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchProductSizeTitle" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/searchProductSizeClose"
            android:layout_width="@dimen/unify_space_16"
            android:layout_height="@dimen/unify_space_16"
            app:icon_name="CLOSE"
            app:layout_constraintBottom_toBottomOf="@id/searchProductSizeTitle"
            app:layout_constraintLeft_toRightOf="@id/searchProductSizeTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify>