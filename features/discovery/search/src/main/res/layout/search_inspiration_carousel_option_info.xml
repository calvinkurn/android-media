<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/optionInfoCardView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/discovery_common_dms_card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/optionInfoImage"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/search_inspiration_carousel_error_product_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/optionInfoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/inspiration_carousel_option_title"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/Unify_N700_68"
            app:typographyType="small"
            app:typographyWeight="bold"
            app:layout_constraintTop_toBottomOf="@id/optionInfoImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/optionInfoName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/inspiration_carousel_product_name"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            app:layout_constraintTop_toBottomOf="@id/optionInfoTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/optionInfoDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/inspiration_carousel_product_description"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="6"
            android:ellipsize="end"
            android:textColor="@color/Unify_N700_96"
            app:typographyType="body_3"
            app:typographyWeight="reguler"
            app:layout_constraintTop_toBottomOf="@id/optionInfoName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>