<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchProductChooseAddressContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.localizationchooseaddress.ui.widget.ChooseAddressWidget
        android:id="@+id/searchProductChooseAddress"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/searchProductChooseAddressSeparator" />

    <View
        android:id="@+id/searchProductChooseAddressSeparator"
        android:layout_width="@dimen/dp_1"
        android:layout_height="24dp"
        android:background="@color/Unify_N75"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/searchProductChooseAddressChangeViewButton" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/searchProductChooseAddressChangeViewButton"
        android:contentDescription="@string/content_desc_search_change_grid_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        app:icon_name="VIEW_GRID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon_enable_state="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>