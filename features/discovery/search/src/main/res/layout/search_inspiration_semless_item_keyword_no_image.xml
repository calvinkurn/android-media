<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerCardViewOptionsKeywordCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    tools:layout_width="match_parent"
    tools:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewKeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="@color/Unify_NN950"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_search_keyword"
        app:layout_goneMarginTop="@dimen/product_card_text_view_product_name_gone_margin_top"
        app:typographyType="body_3"
        tools:text="Product Name" />

</com.tokopedia.unifycomponents.CardUnify2>