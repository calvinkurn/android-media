<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutShopItemProductCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewShopItemProductImage"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="@dimen/dp_6"
        app:cardElevation="@dimen/dp_0">

        <com.tokopedia.search.result.presentation.view.widget.SquareImageView
            android:id="@+id/imageViewShopItemProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/shop_item_product_empty_color"/>

    </android.support.v7.widget.CardView>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/textViewShopItemProductPrice"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/shop_item_product_price_color"
        android:visibility="gone"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/shop_product_item_price"
        tools:visibility="visible"/>

</android.support.constraint.ConstraintLayout>