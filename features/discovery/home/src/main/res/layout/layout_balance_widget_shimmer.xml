<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_container_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/home_iv_logo_balance"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/home_header_title_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintBottom_toBottomOf="@id/home_iv_logo_balance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/home_iv_logo_balance"
                app:layout_constraintTop_toTopOf="@id/home_iv_logo_balance"
                app:typographyType="small" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/home_tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintStart_toStartOf="@id/home_iv_logo_balance"
                app:layout_constraintTop_toBottomOf="@id/home_iv_logo_balance"
                app:typographyType="display_3"
                app:typographyWeight="bold"
                tools:text="GoPay" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/home_tv_reserve_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/Unify_NN600"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_iv_logo_balance"
                app:layout_constraintTop_toBottomOf="@id/home_tv_balance"
                app:typographyType="small"
                tools:text="180.000 Coins" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/layout_shimmer_balance_widget_1"
        layout="@layout/layout_item_shimmer_balance_widget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/divider_balance"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider_balance"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginVertical="12dp"
        android:layout_weight="1"
        android:background="@color/Unify_NN50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/layout_shimmer_balance_widget_2"
        layout="@layout/layout_item_shimmer_balance_widget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/divider_balance"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>