<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <com.tokopedia.unifycomponents.CardUnify2
            android:id="@+id/card_bu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="@dimen/bu_item_large_width"
                android:layout_height="@dimen/bu_item_large_height"
                android:orientation="vertical">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/productName"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/unify_space_8"
                    android:layout_marginEnd="@dimen/unify_space_8"
                    android:layout_marginRight="@dimen/unify_space_8"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:letterSpacing="0.02"
                    android:maxLines="1"
                    android:textColor="@color/Unify_N700_68"
                    android:textSize="10sp"
                    tools:text="EVENTS" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/unify_space_8"
                    android:layout_marginLeft="@dimen/unify_space_8"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="@dimen/unify_space_8"
                    android:layout_marginRight="@dimen/unify_space_8"
                    android:layout_marginBottom="@dimen/unify_space_8"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/footer"
                        layout="@layout/layout_template_footer_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/title1st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/Unify_N700_68"
                        android:textSize="12sp"
                        tools:text="Nilai investasi" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/desc1st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="2dp"
                        android:layout_toEndOf="@id/title1st"
                        android:layout_toRightOf="@id/title1st"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/Unify_N700_96"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Rp999.000.000" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/title2nd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title1st"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="end"
                        android:lineSpacingExtra="6sp"
                        android:maxLines="1"
                        android:textColor="@color/Unify_N700_68"
                        android:textSize="12sp"
                        tools:text="Keuntungan Harian" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/desc2nd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/desc1st"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@id/title2nd"
                        android:layout_toRightOf="@id/title2nd"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/Unify_N700_96"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="+Rp432" />

                </RelativeLayout>

            </LinearLayout>
        </com.tokopedia.unifycomponents.CardUnify2>

    </RelativeLayout>

    <include
        layout="@layout/layout_template_icon_business_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginLeft="@dimen/unify_space_8" />

</FrameLayout>