<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/green_500"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="228dp"
        android:layout_height="104dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:background="@color/white"
        tools:cardCornerRadius="@dimen/dp_4"
        tools:cardElevation="@dimen/dp_10"
        tools:cardMaxElevation="@dimen/dp_14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="@dimen/sp_10"
                android:textColor="#ae31353b"
                android:letterSpacing="0.02"
                android:layout_gravity="end"
                tools:text="EVENTS"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title1st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#ae31353b"
                    tools:text="Nilai investasi"
                    />

                <TextView
                    android:id="@+id/desc1st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/title1st"
                    android:layout_toEndOf="@id/title1st"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#f531353b"
                    android:gravity="end"
                    android:textStyle="bold"
                    tools:text="Rp999.000.000"
                    />

                <TextView
                    android:id="@+id/title2nd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/title1st"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#ae31353b"
                    android:lineSpacingExtra="@dimen/sp_6"
                    tools:text="Keuntungan Harian"
                    />

                <TextView
                    android:id="@+id/desc2nd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/title2nd"
                    android:layout_toEndOf="@id/title2nd"
                    android:layout_below="@id/desc1st"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#f531353b"
                    android:gravity="end"
                    android:textStyle="bold"
                    tools:text="+Rp432"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tagLineLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8">

                <TextView
                    android:id="@+id/tagLine"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:gravity="center"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold"
                    android:lineSpacingExtra="@dimen/sp_6"
                    android:background="@drawable/bg_rounded_pink_label"
                    tools:text="Terlambat Bayar"
                    tools:textColor="#ef164c"
                    />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_anchor="@id/cardView"
        app:layout_anchorGravity="top|start|left">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_squircle" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_beli"
            tools:ignore="VectorDrawableCompat" />

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>