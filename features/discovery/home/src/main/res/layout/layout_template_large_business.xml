<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="228dp"
            android:layout_height="108dp"
            android:background="@color/white"
            tools:cardCornerRadius="@dimen/dp_4"
            tools:cardElevation="@dimen/dp_10"
            tools:cardMaxElevation="@dimen/dp_14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#ae31353b"
                    android:letterSpacing="0.02"
                    android:layout_gravity="end"
                    tools:text="EVENTS"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:orientation="vertical">

                    <include layout="@layout/layout_template_footer_business"
                        android:id="@+id/footer"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:id="@+id/title1st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#ae31353b"
                        tools:text="Nilai investasi"
                        />

                    <TextView
                        android:id="@+id/desc1st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/title1st"
                        android:layout_toEndOf="@id/title1st"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#f531353b"
                        android:gravity="end"
                        android:textStyle="bold"
                        tools:text="Rp999.000.000"
                        />

                    <TextView
                        android:id="@+id/title2nd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/title1st"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#ae31353b"
                        android:lineSpacingExtra="@dimen/sp_6"
                        tools:text="Keuntungan Harian"
                        />

                    <TextView
                        android:id="@+id/desc2nd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/title2nd"
                        android:layout_toEndOf="@id/title2nd"
                        android:layout_below="@id/desc1st"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#f531353b"
                        android:gravity="end"
                        android:textStyle="bold"
                        tools:text="+Rp432"
                        />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <include layout="@layout/layout_template_icon_business_widget"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        />

</FrameLayout>