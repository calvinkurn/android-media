<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/channel_title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_8"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="heading_3"
        android:id="@+id/channel_title"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxEms="12"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toStartOf="@+id/count_down"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Hypebeast Banget Pokoknya" />

    <android.support.constraint.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="see_all_button, see_all_button_unify"/>

    <com.tokopedia.design.countdown.CountDownView
        android:id="@+id/count_down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@id/channel_title"
        app:coundDownBackgroud="@drawable/background_countdown"
        app:layout_constraintBottom_toBottomOf="@+id/channel_title"
        app:layout_constraintEnd_toStartOf="@+id/barrier"
        app:layout_constraintStart_toEndOf="@id/channel_title"
        app:layout_constraintTop_toTopOf="@+id/channel_title"
        tools:layout_height="40dp"
        tools:layout_width="100dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/see_all_button"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:lineSpacingExtra="3sp"
        android:text="@string/lihat_semua"
        android:textColor="@color/medium_green"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/channel_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/channel_title" />

    <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/see_all_button_unify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lihat_semua"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:unifyButtonVariant="ghost"
            app:unifyButtonType="alternate"
            app:unifyButtonSize="medium"
            app:layout_constraintBottom_toBottomOf="@+id/channel_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/channel_title" />
</android.support.constraint.ConstraintLayout>

