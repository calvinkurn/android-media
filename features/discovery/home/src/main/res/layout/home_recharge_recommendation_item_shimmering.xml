<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingRight="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4">

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_lvl3"
        android:layout_marginBottom="@dimen/spacing_lvl4"
        app:layout_constraintLeft_toRightOf="@id/home_recommendation_shimmering_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lvl3">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/home_recommendation_shimmering_icon"
                android:layout_width="@dimen/layout_lvl7"
                android:layout_height="@dimen/layout_lvl7"
                app:corners="@integer/corner_radius_shimmering"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/home_recommendation_shimmering_description"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_lvl3"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                app:layout_constraintLeft_toRightOf="@id/home_recommendation_shimmering_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_lvl4"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl3"
                app:corners="@integer/corner_radius_shimmering"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/home_recommendation_shimmering_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_recommendation_shimmering_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>