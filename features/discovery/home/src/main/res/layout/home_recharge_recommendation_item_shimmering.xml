<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_4">

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:id="@+id/home_recommendation_shimmering_icon"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_8"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.elyeproj.loaderviewlibrary.LoaderTextView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@id/home_recommendation_shimmering_icon"
        app:layout_constraintLeft_toRightOf="@id/home_recommendation_shimmering_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_recommendation_shimmering_icon" />

    <com.elyeproj.loaderviewlibrary.LoaderImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_4"
        app:corners="@integer/corner_radius_shimmering"
        app:layout_constraintTop_toBottomOf="@id/home_recommendation_shimmering_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>