<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_ovo"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginStart="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:padding="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="1px"
    android:weightSum="7"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/container_action_scan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_weight="0.6"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_product_fintech_qr_normal_24"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_below="@+id/img_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_header_fintech_scan"
            android:textColor="@color/font_black_disabled_38"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_6"/>

    </RelativeLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#1e000000" />

    <RelativeLayout
        android:id="@+id/container_tokocash"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.2"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo_tokocash"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_margin="@dimen/dp_8"
            android:src="@drawable/wallet_ic_ovo_home"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/iv_logo_tokocash"
            android:layout_toEndOf="@+id/iv_logo_tokocash"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@+id/tv_title_tokocash"
                android:id="@+id/tv_btn_action_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#03ac0e"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <TextView
                android:layout_below="@+id/tv_title_tokocash"
                android:id="@+id/tv_balance_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_disabled_38"
                android:textSize="@dimen/sp_12"/>

            <ProgressBar
                android:id="@+id/progress_bar_tokocash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:indeterminate="true"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#1e000000" />

    <RelativeLayout
        android:id="@+id/container_tokopoint"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.2"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo_tokopoint"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_margin="@dimen/dp_8"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/container_action_tokopoint"
            android:layout_toRightOf="@+id/iv_logo_tokopoint"
            android:layout_toEndOf="@+id/iv_logo_tokopoint"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_balance_tokopoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/font_black_primary_70"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="50 Toko Poin"/>

                <TextView
                    android:id="@+id/tv_btn_action_tokopoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="#03ac0e"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    tools:text="Kupon Baru"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/text_coupon_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/sp_4"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/font_black_disabled_38"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="900000000000000000 Poin"
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar_tokopoint_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@android:style/Widget.ProgressBar.Small.Inverse"
            android:indeterminate="true"  />

    </RelativeLayout>

</LinearLayout>