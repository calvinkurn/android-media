<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/channel_title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="heading_3"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:id="@+id/channel_title"
        android:layout_width="0dp"
        style="@style/TextView.Title"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxEms="12"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toStartOf="@+id/count_down"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        tools:text="Hypebeast Banget Pokoknya" />

    <com.tokopedia.design.countdown.CountDownView
        android:id="@+id/count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@id/channel_title"
        app:coundDownBackgroud="@drawable/background_countdown"
        app:layout_constraintBottom_toBottomOf="@+id/channel_title"
        app:layout_constraintEnd_toStartOf="@+id/see_all_button"
        app:layout_constraintStart_toEndOf="@id/channel_title"
        app:layout_constraintTop_toTopOf="@+id/channel_title"
        tools:layout_height="40dp"
        tools:layout_width="100dp"
        tools:visibility="visible" />

    <TextView
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:id="@+id/see_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="end"
        android:lineSpacingExtra="3sp"
        android:text="@string/lihat_semua"
        android:textColor="@color/medium_green"
        android:textSize="13sp"
        android:textStyle="normal"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/channel_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/channel_title"
        android:layout_alignParentEnd="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channel_title" />
</androidx.constraintlayout.widget.ConstraintLayout>