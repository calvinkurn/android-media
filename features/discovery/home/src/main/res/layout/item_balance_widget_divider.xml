<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="9dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/divider_balance"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/Unify_NN50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/dummy_container_balance_widget"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/divider_balance"
        app:layout_constraintTop_toTopOf="@id/divider_balance"
        app:layout_constraintBottom_toBottomOf="@id/divider_balance"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>