<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_super_graphic_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingDefaultResource">

        <View
            android:id="@+id/header_background_home"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_banner_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FF0000"
            app:layout_constraintBottom_toBottomOf="@+id/header_background_home"
            app:layout_constraintTop_toTopOf="@+id/header_background_home" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_top_rounded"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/bg_rounded_header"
        app:layout_constraintBottom_toBottomOf="@id/container_super_graphic_header" />

    <FrameLayout
        android:id="@+id/view_empty"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.home_component.customview.pullrefresh.LayoutIconPullRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:color_type="green"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_empty" />

    <com.tokopedia.localizationchooseaddress.ui.widget.ChooseAddressWidget
        android:id="@+id/view_choose_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="11dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_pull_refresh"
        tools:layout_height="10dp"
        tools:visibility="visible" />

    <com.tokopedia.home.beranda.presentation.view.adapter.viewholder.static_channel.BalanceWidgetView
        android:id="@+id/view_balance_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:inflatedId="@+id/view_balance_widget"
        android:layout="@layout/view_stub_balance_widget_view"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/rv_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_choose_address"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_banner"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        app:layout_constraintTop_toBottomOf="@id/view_balance_widget"
        app:layout_constraintBottom_toTopOf="@id/header_top_rounded"
        />

</androidx.constraintlayout.widget.ConstraintLayout>