<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_ovo"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="14dp"
    android:layout_marginStart="14dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="1px"
    android:weightSum="7"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/container_action_scan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="0.6"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_product_fintech_qr_normal_24"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"/>

        <com.tokopedia.unifyprinciples.Typography
            android:layout_below="@+id/img_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_header_fintech_scan"
            android:textColor="@color/Unify_N700_32"
            android:textSize="10sp"
            android:gravity="center"
            app:typographyType="small"
            android:layout_marginBottom="6dp"/>

    </RelativeLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/Unify_N700_44" />

    <RelativeLayout
        android:id="@+id/container_nonlogin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6.4"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bg_container_nonlogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo_tokopoint"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_product_fintech_tokopoint_green_24"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/iv_logo_tokopoint"
            android:layout_toEndOf="@+id/iv_logo_tokopoint"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_title_tokopoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/home_header_tokopoint_no_tokopoints"
                app:typographyType="heading_6"
                android:textColor="@color/Unify_N700_68"
                android:textStyle="bold"/>

            <com.tokopedia.unifyprinciples.Typography
                android:layout_below="@+id/tv_title_tokopoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Unify_G500"
                android:textStyle="bold"
                android:text="@string/home_header_fintech_cek_sekarang"
                app:typographyType="heading_6"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>