<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="104dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_card_home_widget"
        android:orientation="vertical">

        <TextView
            android:id="@+id/productName"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="right"
            android:textSize="@dimen/sp_10"
            android:textColor="#ae31353b"
            android:maxLines="1"
            android:ellipsize="end"
            android:letterSpacing="0.02"
            android:layout_gravity="end"
            android:visibility="gone"
            tools:text="PAKET DATA"
            tools:visibility="visible"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8">

            <include layout="@layout/layout_template_footer_business"
                android:id="@+id/footer"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/charcoal_grey_88"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="BRONET 4G OWS"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_above="@id/footer"
                android:layout_marginTop="@dimen/dp_2"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/sp_10"
                android:textColor="#f531353b"
                android:lineSpacingExtra="@dimen/sp_6"
                android:visibility="gone"
                tools:text="081234567890"
                tools:visibility="visible"
                />

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/layout_template_icon_business_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_4"
        />

</FrameLayout>