<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginRight="@dimen/dp_16"
    app:cardCornerRadius="@dimen/dp_8"
    app:elevation="@dimen/dp_2"
    app:layout_constraintCircleRadius="@dimen/dp_8">

    <ImageView
        android:id="@+id/recharge_recommendation_card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recharge_recommendation_card_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4">

        <androidx.cardview.widget.CardView
            android:id="@+id/recharge_recommendation_product_container"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_8"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/dp_6"
            app:elevation="@dimen/dp_4"
            app:layout_constraintBottom_toBottomOf="@id/recharge_recommendation_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/recharge_recommendation_description">

            <ImageView
                android:id="@+id/ic_recharge_recommendation_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/recharge_recommendation_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:maxLines="3"
            android:minLines="2"
            app:layout_constraintLeft_toRightOf="@id/recharge_recommendation_product_container"
            app:layout_constraintRight_toLeftOf="@id/close_recharge_recommendation_container"
            app:layout_constraintTop_toTopOf="parent"
            app:typographyType="body_3" />

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/btn_recharge_recommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="@string/home_recharge_recommendation_button_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recharge_recommendation_description"
            app:unifyButtonType="transaction" />

        <androidx.cardview.widget.CardView
            android:id="@+id/close_recharge_recommendation_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_12"
            app:cardElevation="@dimen/dp_3"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/dp_6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ic_close_recharge_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_1"
                android:src="@drawable/ic_action_x" />

        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/loading_review"
            layout="@layout/shimmering_review_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

