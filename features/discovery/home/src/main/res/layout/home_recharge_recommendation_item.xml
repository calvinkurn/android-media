<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recharge_recommendation_widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/recharge_recommendation_bg_color"
    android:paddingLeft="@dimen/spacing_lvl4"
    android:paddingTop="@dimen/spacing_lvl3"
    android:paddingRight="@dimen/spacing_lvl4"
    android:paddingBottom="@dimen/spacing_lvl4">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/recharge_recommendation_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_lvl4"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/home_recharge_recommendation_title"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ic_close_recharge_recommendation"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2" />

    <ImageView
        android:id="@+id/ic_close_recharge_recommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/recharge_recommendation_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/recharge_recommendation_title"
        app:srcCompat="@drawable/ic_close_white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lvl4"
        app:cardCornerRadius="@dimen/layout_lvl1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recharge_recommendation_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recharge_recommendation_card_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/home_recharge_recommendation_card_min_height">

            <ImageView
                android:id="@+id/recharge_recommendation_card_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/home_recharge_recommendation_background_margin"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_recharge_recommendation"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_recharge_recommendation" />

            <ImageView
                android:id="@+id/ic_recharge_recommendation_product"
                android:layout_width="@dimen/home_recharge_recommendation_product_icon_card_size"
                android:layout_height="@dimen/home_recharge_recommendation_product_icon_card_size"
                android:layout_marginLeft="@dimen/spacing_lvl2"
                android:padding="@dimen/home_recharge_recommendation_product_icon_card_padding"
                android:background="@drawable/ic_squircle"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/recharge_recommendation_text_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl3"
                android:layout_marginRight="@dimen/spacing_lvl3"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/ic_recharge_recommendation_product"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/recharge_recommendation_text_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_lvl3"
                android:layout_marginTop="@dimen/spacing_lvl1"
                android:layout_marginRight="@dimen/spacing_lvl3"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/ic_recharge_recommendation_product"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recharge_recommendation_text_main"
                app:typographyType="body_3" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_recharge_recommendation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_lvl3"
                android:text="@string/home_recharge_recommendation_button_label"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ic_recharge_recommendation_product"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recharge_recommendation_text_sub"
                app:unifyButtonSize="small"
                app:unifyButtonType="transaction" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/home_recharge_recommendation_loading"
            layout="@layout/home_recharge_recommendation_item_shimmering"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>