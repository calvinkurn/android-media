<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recharge_recommendation_widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/recharge_recommendation_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:lines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ic_close_recharge_recommendation"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_2"
        android:text="@string/home_recharge_recommendation_title"/>

    <ImageView
        android:id="@+id/ic_close_recharge_recommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:padding="@dimen/dp_1"
        android:src="@drawable/ic_action_x"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:cardCornerRadius="@dimen/dp_8"
        app:elevation="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="@dimen/dp_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recharge_recommendation_title">

        <ImageView
            android:id="@+id/recharge_recommendation_card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recharge_recommendation_card_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">

            <androidx.cardview.widget.CardView
                android:id="@+id/recharge_recommendation_product_container"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                app:cardCornerRadius="@dimen/dp_12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dp_4"
                app:elevation="@dimen/dp_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ic_recharge_recommendation_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/recharge_recommendation_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/recharge_recommendation_product_container"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="body_3" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/btn_recharge_recommendation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:minHeight="@dimen/dp_50"
                android:text="@string/home_recharge_recommendation_button_label"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/recharge_recommendation_product_container"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recharge_recommendation_description"
                app:unifyButtonType="transaction" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/home_recharge_recommendation_loading"
            layout="@layout/home_recharge_recommendation_item_shimmering"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>