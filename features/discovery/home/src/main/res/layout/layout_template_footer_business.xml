<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="20dp">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/tagLine"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center"
        android:textSize="10dp"
        android:textStyle="bold"
        android:lineSpacingExtra="6sp"
        android:visibility="gone"
        app:typographyType="small"
        app:typographyWeight="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Terlambat Bayar"
        tools:textColor="@color/Unify_RN500"
        tools:visibility="gone"
        tools:background="@drawable/bg_rounded_pink_label"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/pricePrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/Unify_NN950_68"
        android:lineSpacingExtra="6sp"
        android:visibility="gone"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:typographyType="small"
        app:layout_constraintStart_toEndOf="@+id/tagLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/strikeThroughPrice"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        tools:visibility="gone"
        tools:text="mulai dari"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/strikeThroughPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10dp"
        android:textColor="@color/Unify_NN950_68"
        android:lineSpacingExtra="6sp"
        android:visibility="gone"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:typographyType="small"
        app:layout_constraintStart_toEndOf="@+id/pricePrefix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price"
        tools:visibility="visible"
        tools:text="Rp3.425.000" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/Unify_NN950_68"
        android:textSize="12dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rp3.425.000"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

