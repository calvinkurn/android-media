<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tagLine"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:lineSpacingExtra="@dimen/sp_6"
        android:visibility="gone"
        tools:text="Terlambat Bayar"
        tools:textColor="@color/label_pink"
        tools:visibility="visible"
        tools:background="@drawable/bg_rounded_pink_label"
        />

    <LinearLayout
        android:id="@+id/priceLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pricePrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:textColor="#ae31353b"
            android:lineSpacingExtra="@dimen/sp_6"
            tools:text="mulai dari"
            />

        <TextView
            android:id="@+id/strikeThroughPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:textColor="#ae31353b"
            android:lineSpacingExtra="@dimen/sp_6"
            tools:text="Rp3.425.000"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="#ae31353b"
            android:textStyle="bold"
            android:lineSpacingExtra="@dimen/sp_6"
            tools:text="Rp3.425.000"
            />

    </LinearLayout>

</LinearLayout>