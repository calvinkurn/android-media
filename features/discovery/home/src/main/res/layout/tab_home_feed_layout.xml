<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/tab_home_feed_max_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/tab_home_feed_width"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/tabBackgroundImage"
            android:layout_width="@dimen/tab_home_feed_width"
            android:layout_height="@dimen/tab_home_feed_max_height"
            android:scaleType="centerCrop"
            android:src="@drawable/background_tab_feed_2"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tabTitle"
        android:layout_width="@dimen/tab_home_feed_width"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="top"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="AAA"/>

    <com.tokopedia.home.beranda.presentation.view.customview.ExpandingLineView
        android:id="@+id/tabIndicator"
        android:layout_width="25dp"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        app:lineColor="@color/white"
        />

</RelativeLayout>