<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/dp_140"
            android:layout_height="104dp"
            android:background="@color/white"
            tools:cardCornerRadius="@dimen/dp_8"
            tools:cardElevation="@dimen/dp_10"
            tools:cardMaxElevation="@dimen/dp_14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    app:corners="@integer/corner_radius_shimmering"
                    app:width_weight="0.8" />

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    app:corners="@integer/corner_radius_shimmering"
                    app:width_weight="0.6" />

                <com.elyeproj.loaderviewlibrary.LoaderTextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    app:corners="@integer/corner_radius_shimmering"
                    app:width_weight="0.6" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:visibility="invisible">

        <ImageView
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_squircle" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_margin="@dimen/dp_4"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_beli"
            tools:ignore="VectorDrawableCompat" />

    </FrameLayout>

</FrameLayout>