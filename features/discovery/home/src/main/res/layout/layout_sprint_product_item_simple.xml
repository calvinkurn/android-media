<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/channel_item_container_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal">

    <com.tokopedia.design.image.SquareImageView
        android:id="@+id/channel_image_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@color/green_80" />

    <TextView
        android:id="@+id/channel_price_1"
        style="@style/TextView.Small.Orange"
        android:layout_below="@id/channel_before_disc_price_1"
        android:lineSpacingExtra="@dimen/sp_6"
        android:fontFamily="sans-serif-medium"
        tools:text="Rp 1.399.500" />

    <TextView
        android:id="@+id/channel_before_disc_price_1"
        style="@style/TextView.Micro.BlackDisabled"
        android:layout_below="@id/product_name"
        android:lineSpacingExtra="@dimen/sp_6"
        tools:text="Rp 2.799.000" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/channel_image_1"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/sp_4"
        android:maxLines="2"
        android:textColor="@color/black_70"
        android:textSize="@dimen/sp_12"
        tools:text="Headset Gaming Power Bass" />

    <TextView
        android:id="@+id/channel_discount_1"
        style="@style/TextView.Nano.Red.Bold"
        android:layout_alignTop="@id/channel_image_1"
        android:layout_alignRight="@id/channel_image_1"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/home_channel_discount_text_background_enable"
        android:paddingLeft="@dimen/label_padding_left_right"
        android:paddingTop="@dimen/label_padding_top_bottom"
        android:paddingRight="@dimen/label_padding_left_right"
        android:paddingBottom="@dimen/label_padding_top_bottom"
        tools:text="50% OFF" />

    <TextView
        android:id="@+id/channel_cashback"
        style="@style/TextView.Nano.Green.Bold"
        android:layout_alignBottom="@id/channel_image_1"
        android:layout_alignLeft="@id/channel_image_1"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@drawable/home_channel_cashback_enable"
        android:paddingLeft="@dimen/label_padding_left_right"
        android:paddingTop="@dimen/label_padding_top_bottom"
        android:paddingRight="@dimen/label_padding_left_right"
        android:paddingBottom="@dimen/label_padding_top_bottom"
        tools:text="Cashback 5%" />

</RelativeLayout>