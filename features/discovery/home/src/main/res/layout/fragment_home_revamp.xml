<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.home.widget.ToggleableSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/home_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <FrameLayout
      android:id="@+id/root"
      android:descendantFocusability="blocksDescendants"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:animateLayoutChanges="true"
      android:background="@color/Unify_N0">

    <ImageView
        android:contentDescription="@string/content_desc_home_background"
        android:id="@+id/view_background_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:scaleType="fitXY"/>

    <com.tokopedia.home.beranda.presentation.view.customview.NestedRecyclerView
        android:id="@+id/home_fragment_recycler_view"
        android:layout_marginTop="-8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:tag="home_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:animateLayoutChanges="true">

        <com.tokopedia.home.widget.FloatingTextButton
            android:id="@+id/recom_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_card_home"
            android:visibility="gone"
            app:floating_left_icon="@drawable/ic_drop_down_arrow"
            app:floating_title="@string/cek_recomendasi"
            app:floating_title_allcaps="false" />
      </FrameLayout>

      <com.tokopedia.stickylogin.view.StickyLoginView
          android:id="@+id/sticky_login_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
          app:sticky_highlight_color="@color/Unify_G500"
          app:sticky_left_icon="@drawable/ic_toped_widget_login"/>

    </LinearLayout>

    <com.tokopedia.searchbar.navigation_component.NavToolbar
        android:id="@+id/navToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:minHeight="?actionBarSize"
        android:visibility="gone"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:toolbarContentType="typeSearchbar"
        app:toolbarBackButton="none"
        app:toolbarAlwaysShowShadow="true"
        app:toolbarPageName="/"
        app:toolbarInitialFillColor="transparent"
        app:toolbarInvertSearchBarColor="true"
        app:toolbarInitialTheme="light"
        />

    <com.tokopedia.searchbar.HomeMainToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="top"
        android:minHeight="?actionBarSize"
        app:toolbarInitialTheme="dark"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"/>

    <View
        android:id="@+id/status_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_gravity="top"
        android:background="@color/Unify_G500"
        android:visibility="invisible" />

    <fragment
        android:id="@+id/floating_egg_fragment"
        android:name="com.tokopedia.promogamification.common.floating.view.fragment.FloatingEggButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="floating_egg"
        app:draggable="true"
        app:margin_bottom="@dimen/new_margin_sm" />

  </FrameLayout>

</com.tokopedia.home.widget.ToggleableSwipeRefreshLayout>