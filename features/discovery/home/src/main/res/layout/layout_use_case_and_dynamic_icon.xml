<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|top"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="@dimen/use_case_and_dynamic_image_size"
        android:layout_height="@dimen/use_case_and_dynamic_image_size"
        android:id="@+id/frameLayout">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_radius_20dp"
            tools:layout_conversion_absoluteHeight="52dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_conversion_absoluteWidth="52dp" />
        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/icon_shimmering"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:corners="30"/>
    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/use_case_and_dynamic_icon_size"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:breakStrategy="simple"
        android:hyphenationFrequency="none"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/Unify_N700_68"
        android:textSize="@dimen/sp_10"
        android:textStyle="normal"
        tools:text="Ajukan Ada deh" />

</LinearLayout>