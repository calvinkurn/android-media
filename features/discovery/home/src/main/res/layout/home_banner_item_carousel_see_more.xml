<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_see_more_banner_mix"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    tools:layout_width="match_parent"
    android:layout_width="@dimen/home_banner_mix_carousel_width"
    android:layout_height="match_parent"
    tools:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_banner_mix_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_banner_mix_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_dc_mix_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/discovery_home_see_more_dc_mix"
            android:textColor="@color/Green_G500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/banner_mix_arrow"
            app:layout_constraintStart_toStartOf="@+id/banner_mix_arrow"
            app:layout_constraintTop_toBottomOf="@+id/banner_mix_arrow"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="heading_6" />

        <ImageView
            android:id="@+id/banner_mix_arrow"
            android:layout_width="@dimen/home_banner_mix_arrow_icon_size"
            android:layout_height="@dimen/home_banner_mix_arrow_icon_size"
            app:srcCompat="@drawable/ic_home_banner_mix_see_more"
            app:layout_constraintBottom_toTopOf="@+id/tv_dc_mix_see_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>