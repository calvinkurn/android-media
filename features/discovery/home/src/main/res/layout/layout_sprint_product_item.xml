<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="false"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="116dp"
                android:layout_height="116dp" />

            <TextView
                android:id="@+id/channel_discount"
                style="@style/TextView.Nano"
                android:textStyle="bold"
                android:textColor="@color/discount_color_selector"
                android:background="@drawable/home_channel_discount_bg"
                android:paddingTop="@dimen/label_padding_top_bottom"
                android:paddingBottom="@dimen/label_padding_top_bottom"
                android:paddingLeft="@dimen/label_padding_left_right"
                android:paddingRight="@dimen/label_padding_left_right"
                android:layout_gravity="top|right"
                android:textIsSelectable="true"
                android:text="50% OFF"/>
        </FrameLayout>


        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:text="Rp 663.900"
            android:textColor="@color/black_38"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="4sp"
            android:text="Rp 87.400 "
            android:textColor="@color/orange_red"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ProgressBar
            android:id="@+id/stock_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="3dp"
            android:progress="80"
            android:secondaryProgress="100"
            android:progressBackgroundTintMode="src_in"
            android:progressBackgroundTint="@color/grey_hint_full"
            android:progressDrawable="@drawable/gradient_progress" />

        <com.tokopedia.design.component.TextViewCompat
            android:id="@+id/stock_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:text="Masih Tersedia"
            android:textColor="@color/black_54"
            android:textSize="12sp"
            android:drawablePadding="3dp"
            android:textStyle="normal" />
    </LinearLayout>

</androidx.cardview.widget.CardView>