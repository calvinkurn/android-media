<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_horizontal|top"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="@dimen/use_case_and_dynamic_image_size"
        android:layout_height="@dimen/use_case_and_dynamic_image_size">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:foreground="@drawable/ripple_radius_20dp"
            tools:layout_conversion_absoluteHeight="52dp"
            tools:layout_conversion_absoluteWidth="52dp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="0dp" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/icon_shimmering"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:loader_corner_radius="15dp"
            app:loader_type="rect" />
    </FrameLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="@dimen/use_case_and_dynamic_icon_size"
        android:layout_height="wrap_content"
        android:breakStrategy="simple"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal|top"
        android:hyphenationFrequency="none"
        android:lineSpacingExtra="4sp"
        android:maxLines="2"
        android:textColor="@color/Unify_NN950_68"
        android:textStyle="normal"
        app:typographyType="small"
        tools:text="Ajukan" />

</LinearLayout>