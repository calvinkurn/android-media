<FrameLayout
android:layout_height="wrap_content"
android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp_50"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.tokopedia.unifycomponents.LoaderUnify android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>
    <com.tokopedia.unifycomponents.UnifyButton android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:id="@+id/dynamic_channel_button_retry"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:text="@string/home_page_retry_dynamic_channel"
        app:unifyButtonType="main"
        app:unifyButtonVariant="ghost"
        app:unifyButtonSize="large"
        android:visibility="visible"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        xmlns:android="http://schemas.android.com/apk/res/android"/>
</FrameLayout>