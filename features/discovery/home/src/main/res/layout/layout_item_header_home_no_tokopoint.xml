<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_ovo_tokopoint_widget"
    android:id="@+id/container_tokocash"
    android:layout_marginLeft="@dimen/margin_16"
    android:layout_marginRight="@dimen/margin_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/card_view_margin"
    android:paddingEnd="@dimen/keyline_1_minus_8dp"
    android:paddingRight="@dimen/keyline_1_minus_8dp"
    android:paddingTop="@dimen/card_view_margin"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/iv_logo_tokocash"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:padding="@dimen/keyline_1_minus_8dp"
        app:srcCompat="@drawable/ic_tokocash"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress_bar_tokocash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/card_view_margin"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/container_action_tokocash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            tools:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_tokocash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:lineSpacingExtra="4sp"
                    android:textColor="@color/black_70"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="TokoCash"
                    tools:visibility="gone" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_balance_tokocash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="4sp"
                        android:textColor="@color/black_70"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="Rp 10000"
                        tools:visibility="visible" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/info_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_tokocash_info"
                        android:layout_alignTop="@+id/tv_balance_tokocash"
                        android:layout_alignBottom="@+id/tv_balance_tokocash"
                        android:layout_toRightOf="@+id/tv_balance_tokocash"
                        android:visibility="gone"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_btn_action_tokocash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="4sp"
                        android:textColor="@color/tkpd_main_green"
                        android:textSize="@dimen/fontvs"
                        android:textStyle="bold"
                        app:srcCompat="@drawable/ic_topup"
                        tools:text="Aktivasi"
                        tools:visibility="visible" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>