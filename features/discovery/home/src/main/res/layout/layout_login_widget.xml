<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/home_login_widget_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:unify_image_type="circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_login_widget_title"
        app:layout_constraintBottom_toBottomOf="@id/home_login_widget_subtitle" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/home_login_widget_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/Unify_NN950"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_login_widget_subtitle"
        app:layout_constraintStart_toEndOf="@id/home_login_widget_image"
        app:layout_constraintEnd_toStartOf="@id/home_login_widget_button"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        tools:text="Hi, Rachel The Long-Text-Name-to-Test-Constraint!" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/home_login_widget_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_NN600"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        app:typographyType="small"
        app:layout_constraintTop_toBottomOf="@id/home_login_widget_title"
        app:layout_constraintStart_toEndOf="@id/home_login_widget_image"
        app:layout_constraintEnd_toStartOf="@id/home_login_widget_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        tools:text="@string/login_widget_subtitle_saved" />

    <com.tokopedia.unifycomponents.UnifyButton
        android:id="@+id/home_login_widget_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:unifyButtonSize="small"
        app:unifyButtonType="main"
        android:text="@string/login_widget_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>