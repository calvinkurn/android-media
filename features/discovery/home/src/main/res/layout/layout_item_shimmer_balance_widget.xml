<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_balance_image"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/loader_balance_title"
        app:layout_constraintTop_toTopOf="parent"
        app:loader_type="rect"
        app:loader_corner_radius="2dp"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_balance_title"
        android:layout_width="64dp"
        android:layout_height="8dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/loader_balance_image"
        app:layout_constraintTop_toTopOf="@+id/loader_balance_image"
        app:loader_type="rect"
        app:loader_corner_radius="10dp"/>
    
    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_balance"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:loader_type="rect"
        app:loader_corner_radius="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/loader_balance_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/loader_reserve_balance"
        android:layout_width="64dp"
        android:layout_height="8dp"
        app:loader_type="rect"
        app:loader_corner_radius="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/loader_balance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>