<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:typographyType="heading_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Watch and do not miss it"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        tools:visibility="gone"
        app:typographyType="body_1"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.tokopedia.home.beranda.presentation.view.customview.TokopediaPlayView
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:show_play_buffering="when_playing"
        app:layout_constraintTop_toBottomOf="@+id/description"/>
    <ImageView
        android:id="@+id/thumbnail_image_play"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        android:scaleType="centerCrop"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/description"/>

    <View android:background="@drawable/home_gradient_action_play"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIVE"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/home_background_live"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/title_play"/>
    <TextView
        android:id="@+id/viewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_chip_home_play_viewers"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:visibility="visible"
        tools:text="2382"
        app:layout_goneMarginStart="16dp"
        app:layout_goneMarginLeft="16dp"
        app:layout_goneMarginBottom="25dp"
        app:layout_constraintTop_toTopOf="@+id/live"
        app:layout_constraintStart_toEndOf="@+id/live"
        app:layout_constraintBottom_toBottomOf="@+id/live"/>

    <TextView
        android:id="@+id/title_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:lineSpacingExtra="6sp"
        android:lines="1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toTopOf="@+id/title_description"
        app:layout_constraintEnd_toStartOf="@+id/play"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Review Australia fabulous vintage and green" />
    <TextView
        android:id="@+id/title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:lineSpacingExtra="6sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Yoenik Apparel" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/home_play_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>