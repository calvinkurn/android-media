<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bannerPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Use a separate view for the background, rather than on the root view because it is a
               shared element. Otherwise it interferes with the window enter transition i.e. as it is
               resized for the shared element transition, many views are considered 'off-screen' so
               visibility transitions are not run. -->
        <View
            android:id="@+id/item_play_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:importantForAccessibility="no"
            android:transitionName="@string/home_transition_root"
            tools:targetApi="lollipop" />
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:typographyType="heading_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            tools:visibility="gone"
            app:typographyType="body_1"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.tokopedia.home.beranda.presentation.view.customview.TokopediaPlayView
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:layout_marginTop="@dimen/home_play_banner_player_margin_top"
            android:layout_gravity="center"
            app:layout_constraintDimensionRatio="16:9"
            app:show_play_buffering="when_playing"
            app:layout_constraintTop_toBottomOf="@+id/description"/>
        <ImageView
            android:id="@+id/thumbnail_image_play"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_lvl0"
            android:layout_marginTop="@dimen/home_play_banner_thumbnail_margin_top"
            android:visibility="visible"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="2:1"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/description"/>

        <View android:background="@drawable/home_gradient_action_play"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_play_banner_gradient_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include
            android:id="@+id/live"
            layout="@layout/layout_live_badge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/spacing_lvl2"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/title_play"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/live"
            app:layout_constraintStart_toEndOf="@+id/live"
            app:layout_constraintTop_toTopOf="@+id/live"
            app:layout_goneMarginLeft="@dimen/spacing_lvl4"
            app:layout_goneMarginStart="@dimen/spacing_lvl4"
            app:layout_goneMarginBottom="@dimen/spacing_lvl4"
            app:srcCompat="@drawable/ic_chip_home_play_viewers" />
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/home_play_banner_viewer_margin_start"
            android:layout_marginLeft="@dimen/home_play_banner_viewer_margin_start"
            android:textColor="@android:color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/image_viewer"
            app:layout_constraintStart_toEndOf="@+id/image_viewer"
            app:layout_constraintTop_toTopOf="@+id/image_viewer"
            app:layout_goneMarginBottom="@dimen/spacing_lvl5"
            app:layout_goneMarginLeft="@dimen/spacing_lvl4"
            app:layout_goneMarginStart="@dimen/spacing_lvl4"
            app:typographyType="body_3"
            tools:text="2382"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/home_play_banner_title_margin_bottom"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:ellipsize="end"
            android:lineSpacingExtra="6sp"
            android:lines="1"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0"
            app:typographyType="body_2"
            app:typographyWeight="bold"
            app:layout_constraintBottom_toTopOf="@+id/title_description"
            app:layout_constraintEnd_toStartOf="@+id/play"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Review Australia fabulous vintage and green" />
        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/title_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:lineSpacingExtra="6sp"
            android:layout_marginStart="@dimen/spacing_lvl4"
            android:layout_marginLeft="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/home_play_banner_desc_margin_bottom"
            android:textColor="@android:color/white"
            app:typographyType="body_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Yoenik Apparel" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/play"
            android:layout_width="@dimen/home_play_banner_play_icon_size"
            android:layout_height="@dimen/home_play_banner_play_icon_size"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            android:layout_marginBottom="@dimen/spacing_lvl4"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/home_play_background"
            app:srcCompat="@drawable/ic_play_play_round"
            app:layout_constraintStart_toEndOf="@+id/title_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
