<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_balance"
    android:layout_margin="@dimen/dp_8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="3.2"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_tokopoint"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_logo_tokopoint"
        android:contentDescription="@string/content_desc_tokopoint"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_margin="@dimen/dp_8"
        android:layout_centerVertical="true" />
    <include
        layout="@layout/layout_item_shimmering_ovo"
        android:id="@+id/progress_bar_tokopoint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/container_action_tokopoint"
        android:layout_toRightOf="@+id/iv_logo_tokopoint"
        android:layout_toEndOf="@+id/iv_logo_tokopoint"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/tv_balance_tokopoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/Unify_N700_68"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="50 Toko Poin"/>

        <TextView
            android:id="@+id/tv_btn_action_tokopoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            tools:text="Kupon Baru"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_coupon_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/sp_4"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/Unify_N700_32"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            tools:text="900000000000000000 Poin"
            tools:visibility="visible" />
    </LinearLayout>
</RelativeLayout>