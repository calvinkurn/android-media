<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_container_balance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="@dimen/dp_4"
    android:paddingBottom="@dimen/dp_4">

    <ImageView
        android:id="@+id/home_iv_logo_balance"
        android:contentDescription="@string/content_desc_tokopoint"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_margin="@dimen/dp_4"
        android:layout_centerVertical="true"
        android:clickable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <include
        layout="@layout/layout_item_shimmering_balance"
        android:id="@+id/home_progress_bar_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/home_container_action_balance"
        android:layout_centerVertical="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintLeft_toRightOf="@+id/home_iv_logo_balance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/home_tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/Unify_N700_68"
            android:textStyle="bold"
            tools:text="50 Toko Poin"/>

        <TextView
            android:id="@+id/home_tv_btn_action_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/Unify_G500"
            android:textSize="@dimen/sp_10"
            tools:text="Kupon Baru" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>