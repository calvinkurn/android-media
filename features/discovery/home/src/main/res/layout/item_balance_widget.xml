<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_container_balance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/home_iv_logo_balance"
        android:contentDescription="@string/content_desc_tokopoint"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="4dp"
        android:layout_centerVertical="true"
        android:clickable="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/home_iv_logo_shimmering"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:loader_type="circle"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/home_iv_logo_balance"
        app:layout_constraintTop_toTopOf="@+id/home_iv_logo_balance"
        app:layout_constraintBottom_toBottomOf="@+id/home_iv_logo_balance"/>
    <include
        layout="@layout/layout_item_shimmering_balance"
        android:id="@+id/home_progress_bar_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_container_action_balance"
        android:layout_centerVertical="true"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/home_iv_logo_balance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.tokopedia.unifyprinciples.Typography
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/home_tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center"
            android:textSize="12sp"
            app:typographyType="body_3"
            android:textColor="@color/Unify_N700_68"
            android:textStyle="bold"
            tools:text="50 Toko Poin"/>

        <com.tokopedia.unifyprinciples.Typography
            app:layout_constraintTop_toBottomOf="@id/home_tv_balance"
            app:layout_constraintStart_toEndOf="@id/home_tv_reserve_balance"
            android:id="@+id/home_tv_btn_action_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/Unify_G500"
            app:typographyType="small"
            android:textSize="10sp"
            tools:text="Kupon Baru" />

        <com.tokopedia.unifyprinciples.Typography
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/home_tv_balance"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/home_tv_reserve_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            app:typographyType="small"
            android:textSize="10sp"
            tools:text="10000 " />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>