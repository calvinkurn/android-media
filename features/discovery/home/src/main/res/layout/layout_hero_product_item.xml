<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <com.tokopedia.design.image.SquareImageView
        android:id="@+id/channel_image_1"
        android:layout_width="@dimen/home_channel_4_image_size"
        android:layout_height="@dimen/home_channel_4_image_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"
        tools:src="@color/green_80" />

    <TextView
        android:id="@+id/channel_badge_1"
        style="@style/home_channel_badge_style"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_ms"
        android:visibility="gone"
        tools:text="LIMITED" />

    <TextView
        android:id="@+id/channel_caption_1"
        style="@style/TextView.Micro"
        android:layout_below="@id/channel_image_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:textAlignment="center"
        tools:text="Snapback Kekinian" />
</RelativeLayout>