<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_Background"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_onboarding_navigation"
        android:contentDescription="@string/content_desc_image_on_boarding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>
    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="8dp"
        android:id="@+id/onboarding_title"
        android:text="@string/onboarding_navigation_title"
        android:textSize="20sp"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/image_onboarding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/onboarding_description"
        android:text="@string/onboarding_navigation_description"
        android:textSize="20sp"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/onboarding_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_marginTop="24dp"
        android:id="@+id/onboarding_button"
        android:text="@string/onboarding_navigation_button"
        app:layout_constraintTop_toBottomOf="@id/onboarding_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>