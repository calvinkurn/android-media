<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:paddingBottom="@dimen/dp_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_onboarding_navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>
    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/onboarding_title"
        android:text="@string/onboarding_navigation_title"
        android:textSize="@dimen/sp_20"
        app:typographyType="heading_2"
        app:typographyWeight="bold"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/image_onboarding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <com.tokopedia.unifyprinciples.Typography
        android:layout_marginTop="@dimen/dp_12"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/onboarding_description"
        android:text="@string/onboarding_navigation_description"
        android:textSize="@dimen/sp_20"
        app:typographyType="body_2"
        app:typographyWeight="reguler"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/onboarding_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <com.tokopedia.unifycomponents.UnifyButton
        android:layout_marginTop="@dimen/dp_24"
        android:id="@+id/onboarding_button"
        android:text="@string/onboarding_navigation_button"
        app:layout_constraintTop_toBottomOf="@id/onboarding_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>