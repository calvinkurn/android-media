<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ViewStub
        android:id="@+id/container_super_graphic_header"
        android:inflatedId="@+id/container_super_graphic_header"
        android:layout="@layout/view_stub_header_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ViewStub
        android:id="@+id/header_top_rounded"
        android:inflatedId="@+id/header_top_rounded"
        android:layout="@layout/view_stub_rounded_header"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="@id/container_super_graphic_header" />

    <FrameLayout
        android:id="@+id/view_empty"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ViewStub
        android:id="@+id/view_pull_refresh"
        android:inflatedId="@+id/view_pull_refresh"
        android:layout="@layout/view_stub_pull_refresh_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_empty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ViewStub
        android:id="@+id/view_choose_address"
        android:inflatedId="@+id/view_choose_address"
        android:layout="@layout/view_stub_choose_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/view_pull_refresh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ViewStub
        android:id="@+id/view_balance_widget"
        android:inflatedId="@+id/view_balance_widget"
        android:layout="@layout/view_stub_balance_widget_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_empty"
        app:layout_constraintTop_toBottomOf="@+id/view_choose_address"
        app:layout_constraintBottom_toTopOf="@id/header_top_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>