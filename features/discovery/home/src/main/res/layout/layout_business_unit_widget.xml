<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/home_component_divider_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        tools:background="@color/Unify_Static_Black"/>
    <com.tokopedia.unifycomponents.ContainerUnify
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container_unify"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabBackground="@color/Unify_N0"
            app:tabIndicatorColor="@color/Unify_G500"
            app:tabSelectedTextColor="@color/Unify_G500"
            app:tabTextColor="@color/Unify_N200"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.tokopedia.unifycomponents.LocalLoad
            android:id="@+id/error_bu_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="3" />
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="3" />
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="3"/>
        </LinearLayout>
        <include
            android:id="@+id/grid_loading_layout"
            layout="@layout/layout_template_loading_item_business_widget"/>

    </com.tokopedia.unifycomponents.ContainerUnify>
    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/home_component_divider_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        tools:background="@color/Unify_B500"/>
</LinearLayout>