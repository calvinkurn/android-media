<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/channel_title">

    <include
        android:id="@+id/dc_header"
        android:visibility="gone"
        layout="@layout/home_master_dynamic_channel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/home_error_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_error_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dc_header">

        <ImageView
            android:id="@+id/img_home_default_error"
            android:layout_width="0dp"
            android:layout_height="134dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/content_desc_image_home_error"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/default_home_title_copy"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/default_home_title_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/discovery_home_title_error"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_home_default_error"
            app:layout_constraintTop_toTopOf="@+id/img_home_default_error"
            app:typographyType="heading_4" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/default_home_desc_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/discovery_home_desc_error"
            app:typographyType="body_3"
            app:layout_constraintBottom_toBottomOf="@+id/img_home_default_error"
            app:layout_constraintEnd_toEndOf="@+id/default_home_title_copy"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/default_home_title_copy"
            app:layout_constraintTop_toBottomOf="@+id/default_home_title_copy"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>