<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_8">

        <TextView
            android:id="@+id/home_channel_title"
            style="@style/TextView.Title.Bold"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/page_margin"
            android:paddingRight="@dimen/page_margin"
            android:paddingLeft="@dimen/page_margin"
            android:paddingBottom="@dimen/dp_8"
            android:maxEms="12"
            tools:text="Sprint Sale"/>

        <com.tokopedia.design.countdown.CountDownView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/home_channel_title"
            android:layout_centerVertical="true"
            app:coundDownBackgroud="@drawable/background_countdown"
            android:layout_marginLeft="@dimen/dp_8"/>

        <TextView
            android:id="@+id/see_all_button"
            style="@style/TextView.Small.Green"
            android:text="@string/see_all"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/page_margin"
            android:paddingRight="@dimen/page_margin"
            android:paddingLeft="@dimen/page_margin"
            android:paddingBottom="@dimen/dp_8"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>

</LinearLayout>