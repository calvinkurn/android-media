<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_wallet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginStart="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    android:layout_marginEnd="@dimen/dp_14">
    <LinearLayout
        android:id="@+id/container_action_scan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/container_nonlogin">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_product_fintech_qr_normal_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_header_fintech_scan"
            android:textColor="@color/font_black_disabled_38"
            android:textSize="@dimen/sp_10"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#1F000000"
        app:layout_constraintStart_toEndOf="@+id/container_action_scan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/container_nonlogin"/>
    <RelativeLayout
        android:id="@+id/container_nonlogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_weight="9"
        app:layout_constraintStart_toEndOf="@+id/container_action_scan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bg_container_nonlogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo_tokopoint"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_margin="@dimen/dp_8"
            app:srcCompat="@drawable/ic_product_fintech_tokopoint_green_24"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/iv_logo_tokopoint"
            android:layout_toEndOf="@+id/iv_logo_tokopoint"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title_tokopoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text="@string/home_header_tokopoint_no_tokopoints"
                android:textColor="@color/font_black_primary_70"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@+id/tv_title_tokopoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#03ac0e"
                android:textStyle="bold"
                android:text="@string/home_header_fintech_cek_sekarang"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>