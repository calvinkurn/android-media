<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_9"
    app:cardElevation="@dimen/dp_0"
    android:foreground="@drawable/bg_category_widget_v2"
    android:background="@color/product_card_dms_card_background"
    app:cardBackgroundColor="@color/product_card_dms_card_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/card_container">
        <ImageView
            android:id="@+id/category_image"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_80"
            android:scaleType="centerCrop"
            tools:background="@color/Unify_R200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/content_desc_home_category_widget"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_title_category"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/home_category_widget_v2_title_container_height"
            android:paddingHorizontal="@dimen/dp_8"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/category_image"
            >

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/category_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:typographyType="heading_6"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Your text here"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
