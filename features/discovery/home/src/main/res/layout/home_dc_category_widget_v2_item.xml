<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl2"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_120"
        android:id="@+id/card_container">
        <ImageView
            android:id="@+id/category_image"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:scaleType="centerCrop"
            tools:background="@color/Unify_R200"
            tools:src="@drawable/ic_drugs"
            android:translationY="-20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/content_desc_home_category_widget"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/category_item_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            app:typographyType="heading_6"
            android:paddingHorizontal="@dimen/dp_8"
            android:background="@color/Unify_N0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Two Line Category Name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
