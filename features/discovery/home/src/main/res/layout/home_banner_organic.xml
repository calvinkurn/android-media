<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/see_all_dc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="Lihat Semua"
        android:textColor="@color/Green_G500"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/title_dc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_dc"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/title_dc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3"
        tools:text="Promo Beli Lagi" />

    <com.tokopedia.unifycomponents.ContainerUnify
        android:id="@+id/backgroundBanner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_dc">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dc_banner_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/banner_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="@+id/dc_banner_card"
                app:layout_constraintEnd_toEndOf="@+id/dc_banner_card"
                app:layout_constraintStart_toStartOf="@+id/dc_banner_card"
                app:layout_constraintTop_toTopOf="@+id/dc_banner_card" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/banner_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toStartOf="@+id/banner_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typographyType="heading_5"
                tools:text="Gratis Ongkir" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/banner_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="@dimen/dp_16"
                android:ellipsize="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/banner_button"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/banner_title"
                app:layout_constraintTop_toBottomOf="@+id/banner_title"
                app:layout_constraintVertical_bias="0.0"
                app:typographyType="body_3"
                android:maxLines="1"
                tools:text="untuk pembelian pertama adjoandowand owado ndsn udwnd dnwacnnncuid!" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:id="@+id/banner_button"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_20"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                app:unifyButtonSize="small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Cek Sekarang" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dc_banner_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@+id/dc_banner_card" />
    </com.tokopedia.unifycomponents.ContainerUnify>

</androidx.constraintlayout.widget.ConstraintLayout>