<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <com.tokopedia.unifycomponents.CardUnify2
            android:id="@+id/card_bu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="@dimen/bu_item_small_width"
                android:layout_height="@dimen/bu_item_small_height"
                android:orientation="vertical">

                <com.tokopedia.unifyprinciples.Typography
                    android:id="@+id/productName"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/unify_space_8"
                    android:layout_marginEnd="@dimen/unify_space_8"
                    android:layout_marginRight="@dimen/unify_space_8"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:letterSpacing="0.02"
                    android:maxLines="1"
                    android:textColor="@color/Unify_N700_68"
                    android:textSize="10dp"
                    android:visibility="gone"
                    tools:text="PAKET DATA"
                    tools:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/unify_space_8"
                    android:layout_marginLeft="@dimen/unify_space_8"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="@dimen/unify_space_8"
                    android:layout_marginRight="@dimen/unify_space_8"
                    android:layout_marginBottom="@dimen/unify_space_8">

                    <include
                        android:id="@+id/footer"
                        layout="@layout/layout_template_footer_business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/Unify_N700_96"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:text="BRONET 4G OWS"
                        tools:visibility="visible" />

                    <com.tokopedia.unifyprinciples.Typography
                        android:id="@+id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/footer"
                        android:layout_below="@id/title"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="6sp"
                        android:maxLines="1"
                        android:textColor="@color/Unify_N700_96"
                        android:textSize="10dp"
                        android:visibility="gone"
                        tools:text="081234567890"
                        tools:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>
        </com.tokopedia.unifycomponents.CardUnify2>

    </RelativeLayout>


    <include
        layout="@layout/layout_template_icon_business_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unify_space_8"
        android:layout_marginLeft="@dimen/unify_space_8" />

</FrameLayout>