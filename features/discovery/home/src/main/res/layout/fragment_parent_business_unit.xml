<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/temporayPlaceHolders"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:orientation="vertical"
        tools:visibility="gone"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/dummy_view_1"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:background="@color/grey_200"
            android:textSize="@dimen/fontvs" />

        <View
            android:id="@+id/dummy_view_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/dummy_view_1"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/keyline_1"
            android:background="@color/grey_200" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:visibility="gone"
        android:visibility="gone">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/white"
            app:tabIndicatorColor="@color/tkpd_main_green"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/tkpd_main_green"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="@color/tkpd_dark_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey_100" />

        <com.tokopedia.home.beranda.presentation.view.adapter.viewholder.widget_business.HomeWidgetViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/errorView"
        android:layout_width="@dimen/dp_288"
        android:layout_height="@dimen/dp_96"
        app:cardCornerRadius="@dimen/dp_8"
        tools:visibility="gone"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_288"
                android:layout_height="58dp"
                android:src="@drawable/bg_business_widget_error"
                />

            <FrameLayout
                android:id="@+id/buttonReload"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/circle"
                android:elevation="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:targetApi="lollipop">

                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reload_yellow_32dp"
                    />

            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_toLeftOf="@id/buttonReload"
                android:layout_toStartOf="@id/buttonReload"
                android:text="@string/widget_gagal_ditampilkan"
                android:textStyle="bold"
                android:lineSpacingExtra="@dimen/sp_6"
                android:textSize="@dimen/sp_16"
                android:textColor="#f531353b"
                tools:text="Widget gagal ditampilkan"
                />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_toLeftOf="@id/buttonReload"
                android:layout_toStartOf="@id/buttonReload"
                android:text="@string/message_retry_general_bu_widget"
                android:textSize="@dimen/sp_12"
                android:textColor="#ae31353b"
                android:lineSpacingExtra="@dimen/sp_6"
                android:layout_below="@id/title"
                tools:text="Klik ikon untuk coba lagi"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>