<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/header_background_home"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:unify_image_corner_radius="0" />

    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/header_background_home_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/bg_gradient_super_graphic_header"
        app:layout_constraintBottom_toBottomOf="@+id/header_background_home"
        app:layout_constraintTop_toTopOf="@+id/header_background_home"
        app:unify_image_corner_radius="0" />

    <com.tokopedia.home.beranda.presentation.view.customview.pullrefresh2.LottieSwipeRefreshLayout
        android:id="@+id/home_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:descendantFocusability="blocksDescendants"
        app:indicator_overlay="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navToolbar"
        app:lottie_rawRes="@raw/pull_to_refresh">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            app:layout_type="content">

            <com.tokopedia.home.beranda.presentation.view.customview.NestedRecyclerView
                android:id="@+id/home_fragment_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="beforeDescendants"
                android:tag="home_list"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.tokopedia.usercomponents.stickylogin.view.StickyLoginView
                    android:id="@+id/sticky_login_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:sticky_highlight_color="@color/Unify_G500"
                    app:sticky_left_icon="@drawable/ic_toped_widget_login" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.tokopedia.home.beranda.presentation.view.customview.pullrefresh2.LottieSwipeRefreshLayout>

    <View
        android:id="@+id/status_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="top"
        android:background="@color/Unify_G500"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.searchbar.navigation_component.NavToolbar
        android:id="@+id/navToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:minHeight="?actionBarSize"
        android:tag="@string/tag_home_nav_toolbar"
        android:visibility="invisible"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:toolbarAlwaysShowShadow="true"
        app:toolbarBackButton="none"
        app:toolbarContentType="typeSearchbar"
        app:toolbarInitialFillColor="transparent"
        app:toolbarInitialTheme="light"
        app:toolbarInvertSearchBarColor="true"
        app:toolbarPageName="/" />

    <fragment
        android:id="@+id/floating_egg_fragment"
        android:name="com.tokopedia.promogamification.common.floating.view.fragment.FloatingEggButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="floating_egg"
        app:draggable="true"
        app:margin_bottom="@dimen/new_margin_sm" />

</androidx.constraintlayout.widget.ConstraintLayout>