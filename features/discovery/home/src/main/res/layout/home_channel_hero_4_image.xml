<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_ms">

    <RelativeLayout
        android:id="@+id/channel_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/page_margin">

        <TextView
            android:id="@+id/channel_title"
            style="@style/TextView.Title.Bold"
            android:layout_centerVertical="true"
            android:maxEms="12"
            tools:text="Hypebeast Banget Pokoknya" />

        <TextView
            android:id="@+id/see_all_button"
            style="@style/TextView.Small.Green"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/see_all" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/channel_hero_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="2"
            tools:src="@color/green_80" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>