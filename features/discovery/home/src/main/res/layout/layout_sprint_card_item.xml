<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_ms"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="7sp"
            android:paddingBottom="@dimen/page_margin"
            android:paddingLeft="@dimen/page_margin"
            android:paddingTop="@dimen/page_margin"
            android:scrollHorizontally="true"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="Lucky Hour" />

        <com.tokopedia.design.countdown.CountDownView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_ms"
            android:layout_marginRight="@dimen/margin_ms"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/title"
            app:coundDownBackgroud="@drawable/background_countdown_white"
            app:countDownSparatorColor="@color/white"
            app:countDownTxtColor="@color/black_70" />

        <android.support.v7.widget.CardView
            android:id="@+id/see_more_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/button_margin"
            app:cardCornerRadius="@dimen/pading_4dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4sp"
                android:paddingBottom="@dimen/pading_4dp"
                android:paddingLeft="@dimen/margin_ms"
                android:paddingRight="@dimen/margin_ms"
                android:paddingTop="@dimen/pading_4dp"
                android:text="@string/lihat_semua"
                android:textColor="#399c3f"
                android:textSize="12sp"
                android:textStyle="normal" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:descendantFocusability="afterDescendants" />
</RelativeLayout>