<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/channel_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/page_margin">

        <TextView
            android:id="@+id/channel_title"
            android:layout_width="0dp"
            style="@style/TextView.Title"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:maxEms="12"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toStartOf="@+id/count_down"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="wrap"
            tools:text="Hypebeast Banget Pokoknya" />

        <com.tokopedia.design.countdown.CountDownView
            android:id="@+id/count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/channel_title"
            app:coundDownBackgroud="@drawable/background_countdown"
            app:layout_constraintBottom_toBottomOf="@+id/channel_title"
            app:layout_constraintEnd_toStartOf="@+id/see_all_button"
            app:layout_constraintStart_toEndOf="@id/channel_title"
            app:layout_constraintTop_toTopOf="@+id/channel_title"
            tools:layout_height="40dp"
            tools:layout_width="100dp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/see_all_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="end"
            android:lineSpacingExtra="3sp"
            android:text="@string/lihat_semua"
            android:textColor="@color/medium_green"
            android:textSize="13sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/channel_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/channel_title" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/channel_title_container"
        android:descendantFocusability="afterDescendants" />
</RelativeLayout>