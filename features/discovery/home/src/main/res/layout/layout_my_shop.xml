<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Unify_N0"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/page_margin"
    android:id="@+id/container">

    <androidx.cardview.widget.CardView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardUseCompatPadding="true">

        <com.tokopedia.design.image.SquareImageView
            android:id="@+id/image_shop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/Unify_N700_68"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="BAPE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/badge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:padding="2dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_official" />

            <TextView
                android:id="@+id/official_store_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:text="@string/official_store" />
        </LinearLayout>

        <ImageView
            android:id="@+id/reputation_medal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            app:srcCompat="@drawable/ic_badge_none"
            android:scaleType="fitStart"
            android:layout_marginLeft="2dp" />

    </LinearLayout>

    <com.tokopedia.design.component.TextViewCompat
        android:id="@+id/btn_ubah"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/bg_setting_myshop_btn"
        app:drawableLeftCompat="@drawable/ic_menu_general_setting"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/ubah"
        android:textAllCaps="false"
        android:textStyle="bold" />
</LinearLayout>