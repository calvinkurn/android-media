<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_288"
        android:layout_height="@dimen/dp_112"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_8"
        app:cardMaxElevation="@dimen/dp_14"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_288"
                android:layout_height="58dp"
                android:src="@drawable/bg_business_widget_error"
                />

            <FrameLayout
                android:id="@+id/buttonReload"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/circle"
                android:elevation="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                tools:targetApi="lollipop">

                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reload_yellow_32dp"
                    />

            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_toLeftOf="@id/buttonReload"
                android:layout_toStartOf="@id/buttonReload"
                android:text="@string/konten_gagal_ditampilkan"
                android:textStyle="bold"
                android:lineSpacingExtra="@dimen/sp_6"
                android:textSize="@dimen/sp_16"
                android:textColor="#f531353b"
                tools:text="Konten gagal ditampilkan"
                />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_toLeftOf="@id/buttonReload"
                android:layout_toStartOf="@id/buttonReload"
                android:text="@string/message_retry_general_bu_widget"
                android:textSize="@dimen/sp_12"
                android:textColor="#ae31353b"
                android:lineSpacingExtra="@dimen/sp_6"
                android:layout_below="@id/title"
                tools:text="Klik ikon untuk coba lagi"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>