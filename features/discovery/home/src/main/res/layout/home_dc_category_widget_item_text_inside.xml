<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/category_item_width"
    android:layout_height="@dimen/category_item_height"
    android:padding="@dimen/spacing_lvl2"
    android:id="@+id/card_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/category_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/Unify_R200"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_category_inside" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/category_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:textColor="@color/Unify_Static_White_96"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        app:typographyType="heading_5"
        tools:text="Two Line Category Name"/>
</RelativeLayout>