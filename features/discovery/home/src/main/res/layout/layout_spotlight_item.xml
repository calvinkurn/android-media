<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/spotlightContainer"
    android:layout_width="@dimen/spotlight_width"
    android:layout_height="@dimen/spotlight_height">

    <ImageView
        android:id="@+id/spotlightBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:contentDescription="@string/content_desc_background_spotlight"
        />

    <LinearLayout
        android:id="@+id/spotlightTitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.tokopedia.unifyprinciples.Typography
            android:text="Spotlight title"
            app:typographyType="heading_4"
            android:id="@+id/spotlightTitle"
            android:lines="1"
            android:maxLength="@integer/spotlight_title_char_limit"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/spotlightTag"
            style="@style/TextView"
            tools:text="Label"
            android:maxLength="@integer/spotlight_label_char_limit"
            app:typographyType="small"
            app:typographyWeight="bold"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/spotlight_tag_background"/>

    </LinearLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/spotlightDesc"
        style="@style/TextView.Micro"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:typographyType="body_3"
        android:layout_below="@id/spotlightTitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>