<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spotlightContainer"
    android:layout_marginBottom="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_width="@dimen/spotlight_width"
    android:layout_height="@dimen/spotlight_height">

    <ImageView
        android:id="@+id/spotlightBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/spotlightTitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spotlightTitle"
            style="@style/TextView.Title"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/spotlightTag"
            style="@style/TextView"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/spotlight_tag_background"/>

    </LinearLayout>

    <TextView
        android:id="@+id/spotlightDesc"
        style="@style/TextView.Micro"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_below="@id/spotlightTitleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>