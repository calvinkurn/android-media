<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_balance_widget"
    android:layout_marginLeft="@dimen/home_component_margin_default"
    android:layout_marginStart="@dimen/home_component_margin_default"
    android:layout_marginRight="@dimen/home_component_margin_default"
    android:layout_marginEnd="@dimen/home_component_margin_default"
    android:padding="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="1px"
    android:orientation="horizontal">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_balance_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"/>
</LinearLayout>