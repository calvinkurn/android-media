<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_balance_widget"
    android:layout_marginLeft="@dimen/home_component_margin_default"
    android:layout_marginStart="@dimen/home_component_margin_default"
    android:layout_marginRight="@dimen/home_component_margin_default"
    android:layout_marginEnd="@dimen/home_component_margin_default"
    android:padding="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="1px"
    android:orientation="horizontal">

    <LinearLayout
        android:visibility="invisible"
        android:orientation="vertical"
        android:id="@+id/view_balance_widget_coachmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4">
        <View
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/home_coachmark_item_gopay"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <View
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/home_coachmark_item_tokopoints"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_balance_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"/>
</FrameLayout>