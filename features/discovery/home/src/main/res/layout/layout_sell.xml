<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_16"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_open_shop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:padding="2dp"
        android:text="@string/empty_shop_wording_title"
        android:textColor="@color/black_54"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:padding="2dp"
        android:text="@string/empty_shop_wording_subtitle"
        android:textColor="#61000000"
        android:textSize="14sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/open_shop_btn"
        style="@style/Button.Submit.Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="70dp"
        android:paddingLeft="70dp"
        android:text="@string/buka_toko" />
</LinearLayout>