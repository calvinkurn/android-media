<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FloatingTextButton">
        <attr name="floating_left_icon" format="reference" />
        <attr name="floating_right_icon" format="reference" />
        <attr name="floating_title" format="string|reference" />
        <attr name="floating_title_color" format="reference|color" />
        <attr name="floating_background_color" format="reference|color" />
        <attr name="floating_title_allcaps" format="boolean|reference" />
    </declare-styleable>

    <declare-styleable name="ExpandingLineView">
        <attr name="lineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TokopediaPlayView">
        <attr format="enum" name="show_play_buffering">
            <enum name="never" value="0"/>
            <enum name="when_playing" value="1"/>
            <enum name="always" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SimplePullToRefreshLayout">
        <attr name="max_offset_top" format="dimension"/>
        <attr name="trigger_offset_top" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EasyPullLayout_LayoutParams">
        <attr name="layout_type" format="enum">
            <enum name="topView" value="0"/>
            <enum name="content" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LottiePullToRefreshLayout">
        <attr name="pull_to_refresh_lottieFile" format="reference" />
    </declare-styleable>

    <declare-styleable name="SimpleSwipeRefreshLayout">
        <attr name="max_offset_top_swipe" format="dimension" />
        <attr name="trigger_offset_top_swipe" format="dimension" />
        <attr name="indicator_overlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LottieSwipeRefreshLayout">
        <attr name="lottie_rawRes" format="reference" />
    </declare-styleable>
</resources>