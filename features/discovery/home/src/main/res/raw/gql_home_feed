query getHomeRecom($recomID: Int!, $count: Int!, $page: Int!){
  get_home_recommendation{
    recommendation_product(recomID:$recomID, count:$count, page:$page){
      product{
        id
        name
        url
        applink
        image_url
        is_topads
        price
        badges{
          title
          image_url
        }
        labels{
          title
          color
        }
      }
      has_next_page
    }
  }
}