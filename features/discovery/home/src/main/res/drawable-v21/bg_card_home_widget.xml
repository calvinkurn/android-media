<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                    android:bottom="2dp"
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp" />

            <solid android:color="@color/Unify_N150" />

            <corners android:radius="15dp" />
