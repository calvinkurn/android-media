<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/globalNavCardItemCardView"
    android:layout_width="136dp"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/global_nav_dms_card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/globalNavCardItemConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/globalNavCardItemBackground"
            android:contentDescription="@string/content_desc_globalNavCardItemBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:gravity="center"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/globalNavCardItemLogo"
            android:contentDescription="@string/content_desc_globalNavCardItemLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/globalNavCardCategoryName"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/Unify_NN950_68"
            app:layout_constraintTop_toBottomOf="@id/globalNavCardItemBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="small"
            tools:text="Hotel"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/globalNavCardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintTop_toBottomOf="@id/globalNavCardCategoryName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Yuk, isi waktu luang dengan kegiatan seru!"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/globalNavCardSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/globalNavCardTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="small"
            tools:visibility="visible"
            tools:text="Mulai dari"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/globalNavCardStrikethrough"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/Unify_NN950_68"
            app:layout_constraintTop_toBottomOf="@id/globalNavCardTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="small"
            tools:visibility="visible"
            tools:text="Rp 1.000.000"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/globalNavCardPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/Unify_NN950_96"
            app:layout_constraintTop_toBottomOf="@id/globalNavCardSubtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            tools:text="Rp 1.000.000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>