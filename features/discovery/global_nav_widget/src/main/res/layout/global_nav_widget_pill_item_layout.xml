<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/globalNavPillItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:src="@drawable/global_nav_ic_squircle"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/globalNavPillItemImage"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:padding="@dimen/dp_16"
            android:scaleType="centerInside"/>
        
    </RelativeLayout>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/globalNavPillItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        app:typographyType="body_3"
        app:typographyWeight="reguler"
        android:ellipsize="end"
        android:textColor="@color/Unify_N700_96"
        android:gravity="center_horizontal"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/globalNavPillItemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_2"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="body_3"
        app:typographyWeight="bold"
        android:visibility="gone"
        android:gravity="center_horizontal"/>

</LinearLayout>