<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_see_more_banner_mix"
    android:layout_width="104dp"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_banner_mix_more"
        android:background="@color/tokopedianow_card_dms_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_banner_mix_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/discovery_home_see_more_dc_mix"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_dc_mix_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/discovery_home_see_more_dc_mix"
            android:textColor="@color/Unify_G500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/banner_mix_arrow"
            app:layout_constraintStart_toStartOf="@+id/banner_mix_arrow"
            app:layout_constraintTop_toBottomOf="@+id/banner_mix_arrow"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="display_3"
            app:typographyWeight="bold" />

        <ImageView
            android:id="@+id/banner_mix_arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/discovery_home_see_more_dc_mix"
            app:layout_constraintBottom_toTopOf="@+id/tv_dc_mix_see_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_product_action_see_more_arrow_normal_352" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>