query productRecommendationSingle($userID: Int!, $pageNumber: Int!, $queryParam: String!, $productIDs: String!) {
    productRecommendationWidgetSingle(userID: $userID, queryParam: $queryParam, pageNumber: $pageNumber, productIDs: $productIDs){
       data {
           tID
           source
           title
           foreignTitle
           widgetUrl
           seeMoreAppLink
           seeMoreUrlLink
           pageName
           pagination{
               hasNext
           }
           recommendation {
               id
               name
               categoryBreadcrumbs
               url
               appUrl
               clickUrl
               wishlistUrl
               trackerImageUrl
               imageUrl
               relatedProductAppLink
               relatedProductUrlLink
               price
               priceInt
               discountPercentage
               slashedPrice
               slashedPriceInt
               isWishlist
               shop {
                   id
                   name
                   city
               }
              departmentId
              labels {
                  title
                  color
              }
              badges {
                  title
                  imageUrl
              }
              labelgroup{
                position
                title
                type
                url
              }
              wholesalePrice {
                  price
                  quantityMax
                  quantityMin
                  priceString
              }
              freeOngkir{
                isActive
                imageUrl
              }
              rating
              ratingAverage
              countReview
              recommendationType
              stock
              isTopads
              specificationLabels {
                                              key
                                              value
                            }
           }
       }
     }
 }