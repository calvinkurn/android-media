query productRecommendation($userID: Int!, $pageName: String!, $pageNumber: Int!, $xDevice: String!, $xSource: String!, $productIDs: String!) {
  productRecommendationWidget(userID: $userID, pageName: $pageName, pageNumber: $pageNumber, xDevice: $xDevice, xSource: $xSource, productIDs : $productIDs) {
    data {
      tID
      source
      title
      foreignTitle
      widgetUrl
      pageName
      layoutType
      pagination {
        currentPage
        nextPage
        prevPage
        hasNext
      }
      recommendation {
        id
        name
        categoryBreadcrumbs
        url
        appUrl
        clickUrl
        wishlistUrl
        trackerImageUrl
        imageUrl
        price
        priceInt
        discountPercentage
        slashedPrice
        slashedPriceInt
        minOrder
        shop {
          id
          name
        }
        departmentId
        labels {
          title
          color
        }
        badges {
          title
          imageUrl
        }
        wholesalePrice {
          price
          quantityMax
          quantityMin
          priceString
        }
        rating
        countReview
        recommendationType
        stock
        isTopads
      }
    }
  }
}
