query productRecommendationSingle($userID: Int!, $pageNumber: Int!, $ref: String!, $productIDs: String!) {
    productRecommendationWidgetSingle(userID: $userID, ref: $ref, pageNumber: $pageNumber, productIDs: $productIDs){
        meta {
            recommendation
            size
            failSize
            processTime
            experimentVersion
        }
       data {
           tID
           source
           title
           foreignTitle
           widgetUrl
           seeMoreAppLink
           seeMoreUrlLink
           pageName
           recommendation {
               id
               name
               categoryBreadcrumbs
               url
               appUrl
               clickUrl
               wishlistUrl
               trackerImageUrl
               imageUrl
               discountPercentage
               slashedPrice
               slashedPriceInt
               isWishlist
               relatedProductAppLink
               relatedProductUrlLink
               price
               priceInt
               labelgroup{
                position
                title
                type
                }
               shop {
                   id
                   name
                   city
               }
              departmentId
              labels {
                  title
                  color
              }
              badges {
                  title
                  imageUrl
              }
              wholesalePrice {
                  price
                  quantityMax
                  quantityMin
                  priceString
              }
              freeOngkir{
                isActive
                imageUrl
              }
              rating
              ratingAverage
              countReview
              recommendationType
              stock
              isTopads
              specificationLabels
           }
       }
     }
 }