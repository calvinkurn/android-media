<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/recommendation_widget_steal_the_look_grid_left"
        android:id="@+id/stl_item_left_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_max="@dimen/steal_the_look_left_image_max_width"
        app:layout_constraintDimensionRatio="@dimen/steal_the_look_left_item_ratio"
        app:layout_constraintHorizontal_weight="@dimen/steal_the_look_left_item_horizontal_weight"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_goneMarginLeft="@dimen/steal_the_look_inner_padding_half"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/stl_layout_right"
        app:layout_constraintHorizontal_bias="0"/>

    <LinearLayout
        android:id="@+id/stl_layout_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_weight="@dimen/steal_the_look_right_item_horizontal_weight"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/stl_item_left_grid"
        app:layout_constraintRight_toRightOf="parent">


        <include
            layout="@layout/recommendation_widget_steal_the_look_grid_right"
            android:id="@+id/stl_item_top_right_grid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@dimen/steal_the_look_right_item_vertical_weight"
            app:layout_constraintWidth_max="@dimen/steal_the_look_right_image_max_width"
            app:layout_constraintHorizontal_weight="@dimen/steal_the_look_right_item_horizontal_weight"
            app:layout_constraintDimensionRatio="@dimen/steal_the_look_right_item_ratio" />

        <Space
            android:id="@+id/stl_right_vertical_padding"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@dimen/steal_the_look_inner_padding_weight"/>

        <include
            layout="@layout/recommendation_widget_steal_the_look_grid_right"
            android:id="@+id/stl_item_bottom_right_grid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@dimen/steal_the_look_right_item_vertical_weight"
            tools:visibility="visible"
            app:layout_constraintWidth_max="@dimen/steal_the_look_right_image_max_width"
            app:layout_constraintHorizontal_weight="@dimen/steal_the_look_right_item_horizontal_weight"
            app:layout_constraintDimensionRatio="@dimen/steal_the_look_right_item_ratio" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>