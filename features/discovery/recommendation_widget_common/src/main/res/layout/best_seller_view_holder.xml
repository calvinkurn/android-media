<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8"
    tools:ignore="RtlSymmetry">

    <View
        android:id="@+id/best_seller_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Unify_G100"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/best_seller_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/best_seller_title_other_product"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/best_seller_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/best_seller_see_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="heading_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/best_seller_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/best_seller_title_other_product"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/best_seller_title"
        app:layout_constraintEnd_toStartOf="@+id/best_seller_see_more"
        app:layout_constraintBottom_toTopOf="@+id/best_seller_chip_filter_recyclerview"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_2" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/best_seller_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:lineSpacingExtra="@dimen/sp_6"
        android:text="@string/best_seller_see_more"
        android:textColor="@color/Unify_G500"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/best_seller_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/best_seller_title"
        app:layout_constraintTop_toTopOf="@+id/best_seller_title"
        app:typographyType="heading_6" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/best_seller_chip_filter_recyclerview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_seller_subtitle" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/best_seller_recommendation_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:scrollbars="none"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:paddingStart="@dimen/dp_16"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_seller_chip_filter_recyclerview"
        tools:listitem="@layout/recommendation_carousel_item_view_holder"
        tools:visibility="visible" />

    <include
        android:id="@+id/best_seller_loading_recommendation"
        layout="@layout/partial_shimmering_grid_list_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_seller_chip_filter_recyclerview"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>