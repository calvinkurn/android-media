<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_best_seller_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible"
    tools:ignore="RtlSymmetry">

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/home_component_divider_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="8dp"
        android:visibility="visible"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/best_seller_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/best_seller_title_other_product"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/best_seller_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/best_seller_see_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_component_divider_header"
        app:typographyType="heading_4" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/best_seller_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/best_seller_title_other_product"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Okey"
        app:layout_constraintTop_toBottomOf="@+id/best_seller_title"
        app:layout_constraintEnd_toStartOf="@+id/best_seller_see_more"
        app:layout_constraintBottom_toTopOf="@+id/best_seller_chip_filter_recyclerview"
        app:layout_constraintStart_toStartOf="parent"
        app:typographyType="body_3" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/best_seller_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:lineSpacingExtra="@dimen/sp_6"
        android:text="@string/best_seller_see_more"
        android:textColor="@color/Unify_G500"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/best_seller_title"
        app:layout_constraintBottom_toBottomOf="@+id/best_seller_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:typographyType="heading_6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/best_seller_chip_filter_recyclerview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_seller_subtitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/best_seller_recommendation_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:scrollbars="none"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_seller_chip_filter_recyclerview"
        tools:listitem="@layout/recommendation_carousel_item_view_holder"
        tools:visibility="visible" />

    <include
        android:id="@+id/best_seller_loading_recommendation"
        layout="@layout/partial_recom_shimmering_grid_list_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_seller_chip_filter_recyclerview"
        tools:visibility="visible" />

    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/home_component_divider_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="gone"
        tools:background="@color/Unify_B500"
        app:layout_constraintTop_toBottomOf="@id/best_seller_loading_recommendation"
        />

</androidx.constraintlayout.widget.ConstraintLayout>