<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/channel_header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="14dp"
    android:paddingBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="heading_3"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        android:id="@+id/channel_title"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxEms="12"
        android:lines="1"
        android:ellipsize="end"
        tools:text="Hypebeast Banget Pokoknya"
        app:layout_constraintEnd_toStartOf="@id/cta_border_revamp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tokopedia.unifyprinciples.Typography
        app:typographyType="display_3"
        android:textColor="@color/Unify_NN600"
        android:id="@+id/channel_subtitle"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:lines="1"
        android:ellipsize="end"
        tools:text="Berakhir dalam"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toStartOf="@id/cta_border_revamp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/channel_title"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/cta_border_revamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dynamic_channel_header_cta"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/cta_button_revamp"
            app:icon_name="CHEVRON_RIGHT"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>