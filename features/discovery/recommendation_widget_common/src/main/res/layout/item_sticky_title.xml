<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/root_sticky_title"
    android:layout_width="@dimen/widget_comparison_item_width"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/holder_sticky_title"
        android:foreground="?android:selectableItemBackground"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        android:layout_width="@dimen/widget_sticky_title_item_width"
        android:layout_height="wrap_content">
        <!--Not using unify typography because this view need to be pre-calculated-->
        <!--    before render. And currently typography have some function in onMeasure-->
        <!--    that can impact its height. So for now its not compatible to use -->
        <!--    Typography for this feature-->
        <TextView
            android:id="@+id/tv_sticky_title"
            android:layout_width="@dimen/widget_sticky_title_item_width"
            android:textColor="@color/Unify_N700"
            android:layout_height="match_parent"
            android:lines="2"
            android:padding="@dimen/dp_8"
            android:ellipsize="end"
            />
    </androidx.cardview.widget.CardView>
</FrameLayout>