<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommendation_carousel_see_more_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="35dp"
    android:paddingBottom="72dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_best_seller_empty"
        android:layout_width="180dp"
        android:layout_height="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_best_seller_empty_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/best_seller_empty_title"
        app:typographyType="display_1"
        app:typographyWeight="bold"
        android:textColor="@color/Unify_NN950"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/img_best_seller_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/txt_best_seller_empty_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/best_seller_empty_subtitle"
        android:textColor="@color/Unify_NN600"
        app:typographyType="paragraph_2"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt_best_seller_empty_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>