<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.tokopedia.productcard.ProductCardGridView
        android:id="@+id/productCardView"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/comparison_widget_product_card_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_8"
        />

    <com.tokopedia.recommendation_widget_common.widget.comparison.specs.SpecsView
        android:id="@+id/specsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>