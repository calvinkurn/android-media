<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchTopBar"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:gravity="center_vertical"
    android:background="@color/Unify_Background">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/autocompleteActionUpButton"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            app:icon_name="ARROW_BACK"
            app:icon_enable_state="true"
            app:icon_color_light_enable="@color/Unify_N500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/searchTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="@drawable/autocomplete_bg_input"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="@dimen/dp_28"
            android:paddingEnd="@dimen/dp_32"
            android:layout_marginStart="8dp"
            app:layout_goneMarginEnd="16dp"
            android:hint="@string/search_autocomplete_hint"
            android:imeOptions="actionSearch"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:textColor="@color/Unify_N700_96"
            android:textColorHint="@color/Unify_N700_44"
            android:textCursorDrawable="@drawable/autocomplete_cursor_color"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/autocompleteActionUpButton"
            app:layout_constraintRight_toLeftOf="@+id/actionCancelButton" />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/autocompleteSearchIcon"
            android:layout_width="@dimen/layout_lvl2"
            android:layout_height="@dimen/layout_lvl2"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:icon_name="SEARCH"
            app:icon_enable_state="true"
            app:icon_color_light_enable="@color/Unify_N500"
            app:layout_constraintTop_toTopOf="@id/searchTextView"
            app:layout_constraintBottom_toBottomOf="@id/searchTextView"
            app:layout_constraintLeft_toLeftOf="@id/searchTextView"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/autocompleteClearButton"
            android:layout_width="@dimen/layout_lvl4"
            android:layout_height="@dimen/layout_lvl4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:padding="8dp"
            app:icon_name="CLEAR"
            android:visibility="gone"
            app:icon_enable_state="true"
            app:icon_color_light_enable="@color/Unify_N500"
            app:layout_constraintTop_toTopOf="@id/searchTextView"
            app:layout_constraintBottom_toBottomOf="@id/searchTextView"
            app:layout_constraintRight_toRightOf="@id/searchTextView"/>

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/autocompleteVoiceButton"
            android:layout_width="@dimen/layout_lvl3"
            android:layout_height="@dimen/layout_lvl3"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            app:icon_name="MICROPHONE"
            app:icon_enable_state="true"
            app:icon_color_light_enable="@color/Unify_N500"
            app:layout_constraintTop_toTopOf="@id/searchTextView"
            app:layout_constraintBottom_toBottomOf="@id/searchTextView"
            app:layout_constraintRight_toRightOf="@id/searchTextView"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/actionCancelButton"
            android:text="@string/search_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/Unify_G500"
            android:visibility="gone"
            app:typographyType="body_2"
            app:typographyWeight="reguler"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>