<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/suggestionTopShopCard"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/discovery_common_dms_card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/suggestionTopShopCardImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/suggestionTopShopCardIconTitle"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@id/suggestionTopShopCardImage"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/suggestionTopShopCardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950_96"
            android:text="@string/suggestion_top_shop_card_title"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_goneMarginLeft="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/suggestionTopShopCardIconTitle"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/suggestionTopShopCardSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_NN950_68"
            android:text="@string/suggestion_top_shop_card_subtitle"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyType="display_3"
            app:typographyWeight="reguler"
            app:layout_constraintTop_toBottomOf="@id/suggestionTopShopCardTitle"
            app:layout_constraintLeft_toRightOf="@id/suggestionTopShopCardImage"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/suggestionTopShopCardProduct1"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/suggestionTopShopCardImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/suggestionTopShopCardProduct2"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/suggestionTopShopCardProduct1"
            app:layout_constraintBottom_toBottomOf="@id/suggestionTopShopCardProduct1"
            app:layout_constraintLeft_toRightOf="@id/suggestionTopShopCardProduct1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/suggestionTopShopCardProduct3"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/suggestionTopShopCardProduct2"
            app:layout_constraintBottom_toBottomOf="@id/suggestionTopShopCardProduct2"
            app:layout_constraintLeft_toRightOf="@id/suggestionTopShopCardProduct2"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>