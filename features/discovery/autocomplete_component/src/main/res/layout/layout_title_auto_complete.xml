<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="display_2"
        app:typographyWeight="bold"
        tools:text="Toko" />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/actionDeleteButton"
        android:contentDescription="@string/content_desc_actionDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/delete_all"
        android:textColor="@color/Unify_R500"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:visibility="visible"
        android:visibility="gone"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/actionRefreshButton"
        android:contentDescription="@string/content_desc_actionRefreshButton"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/refresh"
        android:textColor="@color/Unify_G500"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:typographyType="display_3"
        app:typographyWeight="bold"
        tools:visibility="visible"
        android:visibility="gone"/>

</RelativeLayout>