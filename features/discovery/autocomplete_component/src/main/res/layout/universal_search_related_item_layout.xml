<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/universalSearchRelatedContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/universalSearchRelatedImage"
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/universalSearchRelatedTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        app:typographyWeight="reguler"
        app:typographyType="paragraph_3"
        app:layout_constraintTop_toTopOf="@id/universalSearchRelatedImage"
        app:layout_constraintBottom_toBottomOf="@id/universalSearchRelatedImage"
        app:layout_constraintLeft_toRightOf="@id/universalSearchRelatedImage"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>