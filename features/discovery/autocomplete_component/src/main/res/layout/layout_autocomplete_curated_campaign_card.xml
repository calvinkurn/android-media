<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/autocompleteCuratedCampaignCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/discovery_common_dms_card_background"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/autocompleteCuratedCampaignConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/autocompleteCuratedCampaignImage"
            android:contentDescription="@string/content_desc_curated_campaign_image"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:gravity="center"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/autocompleteCuratedCampaignTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@string/dummy_recent_search_two_lines"
            android:textColor="@color/Unify_N700_96"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/autocompleteCuratedCampaignImage"
            app:layout_constraintBottom_toTopOf="@id/autocompleteCuratedCampaignSubtitle"
            app:layout_constraintLeft_toRightOf="@id/autocompleteCuratedCampaignImage"
            app:layout_constraintRight_toRightOf="parent"
            app:typographyType="display_2"
            app:typographyWeight="bold"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/autocompleteCuratedCampaignSubtitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_18"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@string/dummy_recent_search_subtitle"
            android:textColor="@color/Unify_N700_68"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@id/autocompleteCuratedCampaignImage"
            app:layout_constraintLeft_toRightOf="@id/autocompleteCuratedCampaignImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/autocompleteCuratedCampaignTitle"
            app:typographyType="display_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>