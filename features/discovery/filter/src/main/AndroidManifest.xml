<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tokopedia.filter">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true">
        <activity
            android:name=".newdynamicfilter.RevampedDynamicFilterActivity"
            android:label="Filter"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_discovery"
                    android:path="@string/path_filter"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".newdynamicfilter.SortProductActivity"
            android:label="Urutkan"
            android:screenOrientation="portrait">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="@string/internal_scheme"
                    android:host="@string/host_discovery"
                    android:path="@string/path_sort"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".newdynamicfilter.DynamicFilterColorActivity"
            android:label="Warna"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".newdynamicfilter.DynamicFilterOfferingActivity"
            android:label="Penawaran"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".newdynamicfilter.DynamicFilterLocationActivity"
            android:label="Lokasi"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".newdynamicfilter.DynamicFilterRatingActivity"
            android:label="Rating"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".newdynamicfilter.DynamicFilterDetailGeneralActivity"
            android:label="Filter"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".newdynamicfilter.DynamicFilterDetailBrandActivity"
            android:label="Brand"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".newdynamicfilter.DynamicFilterCategoryActivity"
            android:label="Kategori"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>