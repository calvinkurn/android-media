<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sortFilterSortChipContainer"
    android:layout_width="24dp"
    android:layout_height="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.NotificationUnify
        android:id="@+id/sortFilterSortNotification"
        android:layout_width="6dp"
        android:layout_height="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:notificationColor="color_secondary" />

    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/sortFilterSortIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:icon_color_light_enable="@color/Unify_GN500"
        app:icon_color_light_disabled="@color/Unify_NN900"
        app:icon_name="SORT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>