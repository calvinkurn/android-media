<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/filterCategoryDetailLevelThreeContainer"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/filterCategoryDetailLevelThreeTitle"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_18"
        android:textColor="@color/Unify_N700_96"
        app:typographyType="heading_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/filterCategoryDetailLevelThreeRadioButton"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="DKI Jakarta"/>

    <com.tokopedia.unifycomponents.selectioncontrol.RadioButtonUnify
        android:id="@+id/filterCategoryDetailLevelThreeRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_18"
        app:layout_constraintTop_toTopOf="@id/filterCategoryDetailLevelThreeTitle"
        app:layout_constraintBottom_toBottomOf="@id/filterCategoryDetailLevelThreeTitle"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>