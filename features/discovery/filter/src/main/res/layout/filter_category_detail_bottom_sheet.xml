<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filterCategoryDetailHeaderRecyclerView"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:layout_constraintVertical_bias="0"
        android:clipToPadding="false"
        android:paddingBottom="56dp"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filterCategoryDetailContentRecyclerView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/filterCategoryDetailHeaderRecyclerView" />

    <LinearLayout
        android:id="@+id/buttonApplyFilterCategoryDetailContainer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/Unify_Background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.UnifyButton
            android:id="@+id/buttonApplyFilterCategoryDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/dynamic_filter_apply_button_text"
            app:unifyButtonSize="medium"
            app:unifyButtonVariant="filled" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>