<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Unify_Background"
    android:paddingTop="80dp"
    android:paddingLeft="45dp"
    android:paddingRight="45dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:srcCompat="@drawable/ic_empty_search"
        android:contentDescription="@string/search_icon"/>

    <TextView
        android:id="@+id/empty_search_result_title"
        style="@style/TextView.Title.BlackSecondary.Bold"
        android:layout_marginTop="16dp"
        android:gravity="center"
        tools:text="@string/empty_search_result_title_template"/>

    <TextView
        android:id="@+id/empty_search_result_content"
        style="@style/TextView.Small.BlackDisabled"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="4"
        tools:text="@string/empty_search_result_content_template"/>

</LinearLayout>