<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dynamic_filter_item_padding"
    android:paddingRight="@dimen/dynamic_filter_item_padding"
    android:paddingTop="@dimen/dynamic_filter_color_item_vertical_padding"
    android:paddingBottom="@dimen/dynamic_filter_color_item_vertical_padding">

    <com.tokopedia.filter.widget.ColorSampleView
        android:id="@+id/color_icon"
        android:layout_width="@dimen/color_item_icon_size"
        android:layout_height="@dimen/color_item_icon_size"
        />

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/color_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        app:typographyType="body_1"
        app:typographyWeight="reguler"
        tools:text="White"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/filter_detail_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:buttonTint="@color/filter_dms_checkbox_color_state"
        style="@style/CheckBox"/>

</LinearLayout>