<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/home_component_product_card_grid_shimmer_loader_img"
        android:layout_width="132dp"
        android:layout_height="132dp"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/home_component_product_card_grid_shimmer_loader_txt1"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="12dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_component_product_card_grid_shimmer_loader_img"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/home_component_product_card_grid_shimmer_loader_label"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_component_product_card_grid_shimmer_loader_txt1"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/home_component_product_card_grid_shimmer_loader_txt2"
        android:layout_width="0dp"
        android:layout_height="12dp"
        app:loader_type="rect"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/home_component_product_card_grid_shimmer_loader_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home_component_product_card_grid_shimmer_loader_label"
        app:layout_constraintTop_toTopOf="@id/home_component_product_card_grid_shimmer_loader_label"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/home_component_product_card_grid_shimmer_loader_label_bottom"
        android:layout_width="74dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/home_component_product_card_grid_shimmer_loader_label"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>