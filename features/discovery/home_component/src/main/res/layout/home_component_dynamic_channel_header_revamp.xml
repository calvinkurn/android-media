<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/channel_title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="14dp"
    android:paddingBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ViewStub
        android:id="@+id/channel_title"
        android:inflatedId="@+id/channel_title"
        android:layout="@layout/view_stub_dc_title_revamp"
        android:layout_marginStart="@dimen/home_component_margin_default"
        android:layout_marginLeft="@dimen/home_component_margin_default"
        android:layout_width="match_parent"
        tools:visibility="visible"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ViewStub
        android:id="@+id/channel_subtitle"
        android:inflatedId="@+id/channel_subtitle"
        android:layout="@layout/view_stub_dc_subtitle_revamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_component_margin_default"
        android:layout_marginLeft="@dimen/home_component_margin_default"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Berakhir dalam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/count_down"
        app:layout_constraintBottom_toBottomOf="@id/count_down"/>

    <ViewStub
        android:id="@+id/count_down"
        android:inflatedId="@+id/count_down"
        android:layout="@layout/view_stub_count_down_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_goneMarginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/channel_title"
        app:layout_constraintStart_toEndOf="@+id/channel_subtitle"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:layout_height="20dp"
        tools:layout_width="100dp"
        tools:visibility="visible"/>

    <ViewStub
        android:id="@+id/see_all_button"
        android:inflatedId="@+id/see_all_button"
        android:layout="@layout/view_stub_see_all_revamp"
        android:layout_marginRight="@dimen/home_component_margin_default"
        android:layout_marginEnd="@dimen/home_component_margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ViewStub
        android:id="@+id/reload_button"
        android:inflatedId="@+id/iv_reload"
        android:layout="@layout/view_stub_reload_button"
        android:layout_marginRight="@dimen/home_component_margin_default"
        android:layout_marginEnd="@dimen/home_component_margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>