<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/home_component_divider_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        tools:background="@color/Unify_Static_Black"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8">

        <View
            android:id="@+id/deals_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="heading_3"
            android:layout_marginTop="@dimen/dp_8"
            android:id="@+id/deals_channel_title"
            android:layout_marginStart="@dimen/home_component_margin_default"
            android:layout_marginEnd="@dimen/home_component_margin_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxEms="12"
            android:textSize="@dimen/sp_16"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            tools:text="Hypebeast Banget Pokoknya"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deals_channel_subtitle"
            app:layout_constraintTop_toTopOf="@+id/deals_channel_subtitle"/>

        <com.tokopedia.unifyprinciples.Typography
            app:typographyType="body_3"
            android:id="@+id/deals_channel_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:layout_width="100dp"
            android:maxEms="12"
            android:textSize="@dimen/sp_18"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            tools:text="Berakhir dalam"
            android:layout_marginTop="@dimen/dp_6"
            app:layout_constraintEnd_toEndOf="@+id/deals_count_down"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.tokopedia.unifycomponents.timer.TimerUnifySingle
            android:id="@+id/deals_count_down"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/spacing_lvl3"
            android:layout_marginLeft="@dimen/spacing_lvl3"
            android:layout_marginEnd="@dimen/spacing_lvl4"
            android:layout_marginRight="@dimen/spacing_lvl4"
            tools:layout_height="40dp"
            tools:layout_width="100dp"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deals_channel_subtitle"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/header_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_height="100dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="deals_channel_title,deals_channel_subtitle,deals_count_down" />

        <com.tokopedia.productcard.ProductCardListView
            android:id="@+id/master_product_card_deals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_9"
            app:layout_constraintTop_toBottomOf="@+id/header_barrier" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.tokopedia.unifycomponents.DividerUnify
        android:id="@+id/home_component_divider_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        tools:background="@color/Unify_B500"/>
</LinearLayout>