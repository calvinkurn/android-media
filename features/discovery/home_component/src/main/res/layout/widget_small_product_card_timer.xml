<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timer_unify_single_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintWidth_default="spread">

    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/timer_unify_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="start"
        android:maxLines="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/timer_unify_clock_wrapper"
        app:layout_constraintTop_toTopOf="parent"
        app:typographyType="body_3" />

    <LinearLayout
        android:id="@+id/timer_unify_clock_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/timer_unify_clock_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            app:icon_name="CLOCK" />

        <LinearLayout
            android:id="@+id/timer_unify_clock_text_wrapper"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/timer_unify_clock_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/Unify_NN0"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

            <com.tokopedia.home_component.widget.card.timer.TimerTextView
                android:id="@+id/timer_unify_hour_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/timer_unify_colon_first_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:visibility="gone"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

            <com.tokopedia.home_component.widget.card.timer.TimerTextView
                android:id="@+id/timer_unify_minute_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/timer_unify_colon_second_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:visibility="gone"
                app:typographyType="body_3"
                app:typographyWeight="bold" />

            <com.tokopedia.home_component.widget.card.timer.TimerTextView
                android:id="@+id/timer_unify_second_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>