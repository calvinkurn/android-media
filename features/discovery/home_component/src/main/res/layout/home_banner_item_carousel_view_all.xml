<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_all_banner"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    tools:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="@dimen/product_card_flashsale_width"
    android:layout_height="match_parent"
    tools:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_banner_view_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_dc_mix_view_all"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Unify_G500"
            app:typographyType="body_3"
            app:typographyWeight="bold"
            android:fontFamily="sf"
            android:text="@string/lihat_semua"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.tokopedia.iconunify.IconUnify
            android:id="@+id/iv_chevron_down_view_all"
            android:layout_width="@dimen/unify_space_16"
            android:layout_height="@dimen/unify_space_16"
            app:icon_name="CHEVRON_RIGHT"
            app:icon_color_light_enable="@color/Unify_GN500"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@id/tv_dc_mix_view_all"
            app:layout_constraintTop_toTopOf="@id/tv_dc_mix_view_all"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_banner_mix_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_banner_mix_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/tv_dc_mix_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/discovery_home_see_more_dc_mix"
            android:textColor="@color/Unify_G500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/banner_mix_arrow"
            app:layout_constraintStart_toStartOf="@+id/banner_mix_arrow"
            app:layout_constraintTop_toBottomOf="@+id/banner_mix_arrow"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="heading_6" />

        <ImageView
            android:id="@+id/banner_mix_arrow"
            android:layout_width="@dimen/home_banner_mix_arrow_icon_size"
            android:layout_height="@dimen/home_banner_mix_arrow_icon_size"
            app:srcCompat="@drawable/ic_product_action_see_more_arrow_normal_352"
            app:layout_constraintBottom_toTopOf="@+id/tv_dc_mix_see_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>