<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">
        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmer_featured_brand_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintDimensionRatio="1:1"
            app:loader_type="rect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:corners="0" />

        <FrameLayout
            android:id="@+id/container_featured_brand_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@drawable/featured_brand_border_image"
            app:layout_constraintBottom_toBottomOf="@+id/shimmer_featured_brand_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_featured_brand_image">

            <com.tokopedia.unifycomponents.LoaderUnify
                android:contentDescription="@string/content_desc_featured_brand_icon"
                android:id="@+id/featured_brand_logo"
                app:loader_type="circle"
                android:layout_width="@dimen/component_featured_brand_logo_shimmer_size"
                android:layout_height="@dimen/component_featured_brand_logo_shimmer_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                />
        </FrameLayout>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmer_featured_brand_desc"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:corners="@integer/corner_radius_shimmering"
            app:loader_type="line"
            app:width_weight="0.6"
            android:layout_marginHorizontal="9dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_featured_brand_logo"
            tools:visibility="visible" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/shimmer_featured_brand_value"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:corners="@integer/corner_radius_shimmering"
            app:loader_type="line"
            app:width_weight="0.6"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_featured_brand_desc"
            tools:text="brand Name"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>