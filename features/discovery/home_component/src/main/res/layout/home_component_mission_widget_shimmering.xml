<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="13dp">

    <include
        android:id="@+id/shimmer_mission_widget_1"
        layout="@layout/home_component_mission_widget_shimmering_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmer_mission_widget_2"
        layout="@layout/home_component_mission_widget_shimmering_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/shimmer_mission_widget_1"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmer_mission_widget_3"
        layout="@layout/home_component_mission_widget_shimmering_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/shimmer_mission_widget_2"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmer_mission_widget_4"
        layout="@layout/home_component_mission_widget_shimmering_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/shimmer_mission_widget_3"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmer_mission_widget_5"
        layout="@layout/home_component_mission_widget_shimmering_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/shimmer_mission_widget_4"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/shimmer_mission_widget_6"
        layout="@layout/home_component_mission_widget_shimmering_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/shimmer_mission_widget_5"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>