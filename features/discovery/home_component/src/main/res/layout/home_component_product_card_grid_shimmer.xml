<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/home_component_product_card_grid_shimmer_loader_img"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginBottom="8dp"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_component_product_card_grid_shimmer_loader_txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/home_component_product_card_grid_shimmer_loader_txt1"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintWidth_percent="0.8"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_component_product_card_grid_shimmer_loader_img"
        app:layout_constraintBottom_toTopOf="@id/home_component_product_card_grid_shimmer_loader_txt2"/>

    <com.tokopedia.unifycomponents.LoaderUnify
        android:id="@+id/home_component_product_card_grid_shimmer_loader_txt2"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginBottom="8dp"
        app:loader_corner_radius="10dp"
        app:loader_type="rect"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_component_product_card_grid_shimmer_loader_txt1"/>

</androidx.constraintlayout.widget.ConstraintLayout>