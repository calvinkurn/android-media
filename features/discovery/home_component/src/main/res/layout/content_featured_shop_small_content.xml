<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="128dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_lvl2"
    tools:background="@color/Yellow_Y500"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/featured_shop_product_logo_shop"
        app:layout_constraintBottom_toBottomOf="@+id/featured_shop_product_logo_shop">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="81dp"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_4"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.tokopedia.unifyprinciples.Typography
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_12"
                    tools:text="Shop Name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <ImageView
        android:id="@+id/featured_shop_product_logo_shop"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/red_500"/>

    <ImageView
        android:id="@+id/featured_shop_product_shop_badge"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/featured_shop_product_logo_shop"
        app:layout_constraintEnd_toEndOf="@+id/featured_shop_product_logo_shop"
        tools:background="@color/green_500" />
</androidx.constraintlayout.widget.ConstraintLayout>