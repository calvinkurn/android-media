<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_lego_auto_card"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:card_type="clear"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_lego_auto">

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/Unify_NN950_96"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:typographyType="display_3"
            app:typographyWeight="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_image"
            app:layout_constraintHorizontal_bias="0"
            tools:text="TITLE"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/item_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/Unify_NN950_68"
            android:layout_marginBottom="8dp"
            app:typographyType="display_3"
            app:typographyWeight="reguler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_name"
            app:layout_constraintEnd_toStartOf="@id/item_image"
            tools:text="test"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/item_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginEnd="4dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/content_desc_lego_image"/>

        <View
            android:background="@color/Unify_NN950"
            android:alpha="0.06"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.tokopedia.unifycomponents.CardUnify2>
