<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_16"
    android:background="@color/white">

    <TextView style="@style/TextView.Small.BlackSecondary"
        android:layout_gravity="center_horizontal"
        android:text="@string/have_not_joined_flashsale_title"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_3"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <TextView
                android:id="@+id/title"
                style="@style/TextView.Title.Bold"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_horizontal"
                android:text="@string/join_flashsale_title"
                app:layout_constraintBottom_toTopOf="@+id/benefit_flashsale_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView style="@style/TextView.Micro"
                android:id="@+id/number_1"
                android:text="1."
                app:layout_constraintTop_toTopOf="@+id/benefit_flashsale_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView style="@style/TextView.Micro"
                android:id="@+id/benefit_flashsale_1"
                android:layout_width="0dp"
                android:text="@string/benefit_flashsale_1"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintLeft_toRightOf="@+id/number_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/number_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/benefit_flashsale_2"/>

            <TextView style="@style/TextView.Micro"
                android:text="2."
                app:layout_constraintTop_toTopOf="@+id/benefit_flashsale_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView style="@style/TextView.Micro"
                android:id="@+id/benefit_flashsale_2"
                android:layout_width="0dp"
                android:text="@string/benefit_flashsale_2"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/benefit_flashsale_1"
                app:layout_constraintLeft_toLeftOf="@+id/benefit_flashsale_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/benefit_flashsale_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/benefit_flashsale_3"/>

            <TextView style="@style/TextView.Micro"
                android:text="3."
                app:layout_constraintTop_toTopOf="@+id/benefit_flashsale_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView style="@style/TextView.Micro"
                android:id="@+id/benefit_flashsale_3"
                android:layout_width="0dp"
                android:text="@string/benefit_flashsale_3"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/benefit_flashsale_2"
                app:layout_constraintLeft_toLeftOf="@+id/benefit_flashsale_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/benefit_flashsale_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/benefit_flashsale_4"/>

            <TextView style="@style/TextView.Micro"
                android:text="4."
                app:layout_constraintTop_toTopOf="@+id/benefit_flashsale_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView style="@style/TextView.Micro"
                android:id="@+id/benefit_flashsale_4"
                android:layout_width="0dp"
                android:text="@string/benefit_flashsale_4"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/benefit_flashsale_3"
                app:layout_constraintLeft_toLeftOf="@+id/benefit_flashsale_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/benefit_flashsale_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/benefit_flashsale_5"/>

            <TextView style="@style/TextView.Micro"
                android:text="5."
                app:layout_constraintTop_toTopOf="@+id/benefit_flashsale_5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView style="@style/TextView.Micro"
                android:id="@+id/benefit_flashsale_5"
                android:layout_width="0dp"
                android:text="@string/benefit_flashsale_5"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/benefit_flashsale_4"
                app:layout_constraintLeft_toLeftOf="@+id/benefit_flashsale_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/benefit_flashsale_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/see_more"/>

            <TextView style="@style/TextView.Micro.Green"
                android:id="@+id/see_more"
                android:layout_gravity="center_horizontal"
                android:text="@string/fm_campaign_list_upcoming_empty_content"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@+id/benefit_flashsale_5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>