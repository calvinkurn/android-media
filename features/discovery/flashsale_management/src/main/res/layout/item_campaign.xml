<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_3"
    app:cardPreventCornerOverlap="false"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <ImageView
            android:id="@+id/ivImageCampaign"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80" />

        <TextView
            android:id="@+id/tvCampaignType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flash Sale"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintLeft_toRightOf="@+id/ivImageCampaign"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvCampaignName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Gadget unik dan spesial untuk kado lebaran yang indah"
            style="@style/TextView.Small.Bold"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintLeft_toLeftOf="@+id/tvCampaignType"
            app:layout_constraintTop_toBottomOf="@+id/tvCampaignType"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/ivClock"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_time"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@+id/ivImageCampaign"/>

        <TextView
            android:id="@+id/tvCampaignDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9 Apr, 08.00 - 12.00"
            style="@style/TextView.Micro"
            android:layout_marginLeft="@dimen/dp_8"
            app:layout_constraintLeft_toRightOf="@+id/ivClock"
            app:layout_constraintTop_toTopOf="@+id/ivClock"
            app:layout_constraintBottom_toBottomOf="@id/ivClock" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dibatalkan"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            style="@style/TextView.Micro"
            android:layout_marginLeft="@dimen/dp_8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivClock"
            app:layout_constraintBottom_toBottomOf="@id/ivClock"
            android:background="@drawable/bg_tv_status"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>