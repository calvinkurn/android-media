<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:id="@+id/card_tnc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_3"
        app:cardPreventCornerOverlap="false"
        app:layout_goneMarginBottom="@dimen/dp_32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/label_last_updated">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <TextView style="@style/TextView.Small.Bold"
                android:text="@string/tnc_title"/>

            <WebView android:id="@+id/webview_tnc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:id="@+id/see_full_tnc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="@dimen/dp_4"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_tnc"
        app:layout_constraintBottom_toBottomOf="@+id/card_tnc">

        <TextView style="@style/TextView.Small.Bold"
            android:text="@string/label_see_full"
            android:padding="@dimen/dp_8"
            android:minWidth="@dimen/dp_240"
            android:gravity="center"/>

    </android.support.v7.widget.CardView>

    <TextView style="@style/TextView.Micro.BlackDisabled"
        android:id="@+id/label_last_updated"
        tools:text="Updated at 21 January 2010"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_tnc"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
