<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16">

    <TextView style="@style/TextView.Micro.BlackDisabled"
        android:id="@+id/label_discount_range"
        android:text="@string/label_discount_range"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro"
        android:id="@+id/discount_range"
        tools:text="Rp100.000 - Rp12.000.000"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/label_discount_range"
        app:layout_constraintStart_toStartOf="@+id/label_discount_range"
        app:layout_constraintLeft_toLeftOf="@+id/label_discount_range"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>
    
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_center"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView style="@style/TextView.Micro.BlackDisabled"
        android:id="@+id/label_discount"
        android:text="@string/label_discount"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@+id/discount_range"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_center"
        app:layout_constraintRight_toLeftOf="@+id/guideline_center"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro"
        android:id="@+id/discount"
        tools:text="5% - 50%"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/label_discount"
        app:layout_constraintStart_toStartOf="@+id/label_discount"
        app:layout_constraintLeft_toLeftOf="@+id/label_discount"
        app:layout_constraintEnd_toEndOf="@+id/label_discount"
        app:layout_constraintRight_toRightOf="@+id/label_discount"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro.BlackDisabled"
        android:id="@+id/label_rating"
        android:text="@string/label_rating"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/discount"
        app:layout_constraintStart_toStartOf="@+id/label_discount"
        app:layout_constraintLeft_toLeftOf="@+id/label_discount"
        app:layout_constraintEnd_toEndOf="@+id/label_discount"
        app:layout_constraintRight_toRightOf="@+id/label_discount"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro"
        android:id="@+id/rating"
        tools:text="4-5"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/label_rating"
        app:layout_constraintStart_toStartOf="@+id/label_discount"
        app:layout_constraintLeft_toLeftOf="@+id/label_discount"
        app:layout_constraintEnd_toEndOf="@+id/label_discount"
        app:layout_constraintRight_toRightOf="@+id/label_discount"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro.BlackDisabled"
        android:id="@+id/label_limit_request"
        android:text="@string/label_limit_request"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        app:layout_constraintStart_toStartOf="@+id/label_discount"
        app:layout_constraintLeft_toLeftOf="@+id/label_discount"
        app:layout_constraintEnd_toEndOf="@+id/label_discount"
        app:layout_constraintRight_toRightOf="@+id/label_discount"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro"
        android:id="@+id/limit_request"
        tools:text="2 produk"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/label_limit_request"
        app:layout_constraintStart_toStartOf="@+id/label_discount"
        app:layout_constraintLeft_toLeftOf="@+id/label_discount"
        app:layout_constraintEnd_toEndOf="@+id/label_discount"
        app:layout_constraintRight_toRightOf="@+id/label_discount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Right Side -->

    <TextView style="@style/TextView.Micro.BlackDisabled"
        android:id="@+id/label_min_stock"
        android:text="@string/label_min_stock"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintTop_toTopOf="@+id/label_discount"
        app:layout_constraintStart_toEndOf="@+id/guideline_center"
        app:layout_constraintLeft_toRightOf="@+id/guideline_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro"
        android:id="@+id/min_stock"
        tools:text="15"
        app:layout_constraintTop_toTopOf="@+id/discount"
        app:layout_constraintStart_toStartOf="@+id/label_min_stock"
        app:layout_constraintLeft_toLeftOf="@+id/label_min_stock"
        app:layout_constraintEnd_toEndOf="@+id/label_min_stock"
        app:layout_constraintRight_toRightOf="@+id/label_min_stock"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro.BlackDisabled"
        android:id="@+id/label_min_cashback"
        android:text="@string/label_min_cashback"
        app:layout_constraintTop_toTopOf="@+id/label_rating"
        app:layout_constraintStart_toStartOf="@+id/label_min_stock"
        app:layout_constraintLeft_toLeftOf="@+id/label_min_stock"
        app:layout_constraintEnd_toEndOf="@+id/label_min_stock"
        app:layout_constraintRight_toRightOf="@+id/label_min_stock"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro"
        android:id="@+id/min_cashback"
        tools:text="-"
        app:layout_constraintTop_toTopOf="@+id/rating"
        app:layout_constraintStart_toStartOf="@+id/label_min_stock"
        app:layout_constraintLeft_toLeftOf="@+id/label_min_stock"
        app:layout_constraintEnd_toEndOf="@+id/label_min_stock"
        app:layout_constraintRight_toRightOf="@+id/label_min_stock"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro.BlackDisabled"
        android:id="@+id/label_notes"
        android:text="@string/label_notes"
        app:layout_constraintTop_toTopOf="@+id/label_limit_request"
        app:layout_constraintStart_toStartOf="@+id/label_min_stock"
        app:layout_constraintLeft_toLeftOf="@+id/label_min_stock"
        app:layout_constraintEnd_toEndOf="@+id/label_min_stock"
        app:layout_constraintRight_toRightOf="@+id/label_min_stock"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView style="@style/TextView.Micro"
        android:id="@+id/notes"
        tools:text="Tidak PreOrder"
        android:layout_marginBottom="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="@+id/limit_request"
        app:layout_constraintStart_toStartOf="@+id/label_min_stock"
        app:layout_constraintLeft_toLeftOf="@+id/label_min_stock"
        app:layout_constraintEnd_toEndOf="@+id/label_min_stock"
        app:layout_constraintRight_toRightOf="@+id/label_min_stock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

</androidx.constraintlayout.widget.ConstraintLayout>