<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dp_3"
    app:cardPreventCornerOverlap="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16">

        <android.support.v7.widget.CardView
            android:id="@+id/base_layout_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivImageCampaign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription"/>

        </android.support.v7.widget.CardView>


        <TextView android:id="@+id/tvCampaignType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Flash Sale"
            style="@style/TextView.Micro.BlackDisabled"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintLeft_toRightOf="@+id/base_layout_image"
            app:layout_constraintStart_toEndOf="@+id/base_layout_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCampaignName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Gadget unik dan spesial untuk kado lebaran yang indah"
            style="@style/TextView.Small"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintLeft_toLeftOf="@+id/tvCampaignType"
            app:layout_constraintTop_toBottomOf="@+id/tvCampaignType"
            app:layout_constraintRight_toRightOf="@+id/tvCampaignType"/>

        <TextView android:id="@+id/label_period"
            style="@style/TextView.Micro.BlackDisabled"
            android:text="@string/label_period"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@+id/base_layout_image"
            app:layout_constraintStart_toStartOf="@+id/base_layout_image"
            app:layout_constraintLeft_toLeftOf="@+id/base_layout_image"/>

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextView.Micro"
            android:id="@+id/tvCampaignDate"
            android:layout_width="0dp"
            tools:text="9 Apr, 08.00 - 12.00"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintTop_toBottomOf="@+id/label_period"
            app:layout_constraintStart_toStartOf="@+id/label_period"
            app:layout_constraintLeft_toLeftOf="@+id/label_period"
            app:layout_constraintEnd_toStartOf="@+id/tvStatus"
            app:layout_constraintRight_toLeftOf="@+id/tvStatus"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvStatus"
            style="@style/TextView.Micro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tv_status"
            android:drawableStart="@drawable/ic_status_dot"
            android:drawableLeft="@drawable/ic_status_dot"
            android:drawablePadding="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/tvCampaignDate"
            app:layout_constraintTop_toTopOf="@+id/label_period"
            app:layout_constraintRight_toLeftOf="@+id/iv_arrow_down"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_down"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Dibatalkan" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            app:srcCompat="@drawable/ic_arrow_down_grey"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvStatus"
            app:layout_constraintBottom_toBottomOf="@+id/tvStatus"/>

        <LinearLayout
            android:id="@+id/base_expand_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCampaignDate">

            <ImageView android:id="@+id/image_step"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:layout_gravity="center_horizontal"
                tools:src="@drawable/ic_fs_step_cancelled" />

            <TextView
                android:id="@+id/title_process"
                style="@style/TextView.Small.Bold"
                android:text="@string/title_campaign_product_selection_end"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"/>

            <TextView
                android:id="@+id/desc_process"
                style="@style/TextView.Micro"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/desc_campaign_product_selection_end"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"/>

        </LinearLayout>

        <Button android:id="@+id/btn_list_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Button.Submit.Green.Full"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@string/label_product_list"
            app:layout_goneMarginTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@+id/base_expand_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>