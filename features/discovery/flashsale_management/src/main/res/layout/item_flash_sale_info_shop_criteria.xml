<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_16"
    app:cardElevation="@dimen/dp_3"
    app:cardPreventCornerOverlap="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/dp_16">

        <TextView style="@style/TextView.Small.Bold"
            android:text="@string/shop_criteria_title"
            android:id="@+id/shop_criteria_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"/>

        <TextView style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="0dp"
            android:text="@string/label_shop_type"
            android:id="@+id/label_shop_type"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/shop_criteria_title" />

        <TextView style="@style/TextView.Micro"
            android:id="@+id/shop_type"
            android:layout_width="0dp"
            tools:text="Official Store"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/label_shop_type"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View android:id="@+id/divider_shop_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey_300"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_type"/>

        <TextView style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="0dp"
            android:text="@string/label_shop_reputation"
            android:id="@+id/label_shop_reputation"
            app:layout_constraintLeft_toLeftOf="@+id/label_shop_type"
            app:layout_constraintStart_toStartOf="@+id/label_shop_type"
            app:layout_constraintRight_toRightOf="@+id/label_shop_type"
            app:layout_constraintEnd_toEndOf="@+id/label_shop_type"
            app:layout_constraintTop_toTopOf="@+id/shop_reputation_min"
            app:layout_constraintBottom_toBottomOf="@+id/shop_reputation_min"/>

        <TextView style="@style/TextView.Micro"
            android:id="@+id/label_shop_reputation_min"
            android:text="@string/label_minimum"
            app:layout_constraintLeft_toLeftOf="@+id/shop_type"
            app:layout_constraintStart_toStartOf="@+id/shop_type"
            app:layout_constraintTop_toTopOf="@+id/shop_reputation_min"
            app:layout_constraintBottom_toBottomOf="@+id/shop_reputation_min"/>
        
        <ImageView android:id="@+id/shop_reputation_min"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_16"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            tools:ignore="contentDescription"
            app:layout_constraintLeft_toRightOf="@+id/label_shop_reputation_min"
            app:layout_constraintStart_toEndOf="@+id/label_shop_reputation_min"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_shop_type"
            app:layout_constraintHorizontal_bias="0"/>

        <View android:id="@+id/divider_shop_reputation"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey_300"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="@+id/divider_shop_type"
            app:layout_constraintStart_toStartOf="@+id/divider_shop_type"
            app:layout_constraintEnd_toEndOf="@+id/divider_shop_type"
            app:layout_constraintRight_toRightOf="@+id/divider_shop_type"
            app:layout_constraintTop_toBottomOf="@+id/shop_reputation_min"/>

        <TextView style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="0dp"
            android:text="@string/label_shop_success_transaction"
            android:id="@+id/label_shop_success_transaction"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="@+id/label_shop_type"
            app:layout_constraintStart_toStartOf="@+id/label_shop_type"
            app:layout_constraintRight_toRightOf="@+id/label_shop_type"
            app:layout_constraintEnd_toEndOf="@+id/label_shop_type"
            app:layout_constraintTop_toBottomOf="@+id/divider_shop_reputation" />

        <TextView style="@style/TextView.Micro"
            android:id="@+id/shop_success_transaction"
            android:layout_width="0dp"
            tools:text="90% - 100%"
            app:layout_constraintLeft_toLeftOf="@+id/shop_type"
            app:layout_constraintStart_toStartOf="@+id/shop_type"
            app:layout_constraintTop_toTopOf="@+id/label_shop_success_transaction"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View android:id="@+id/divider_shop_success_transaction"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:background="@color/grey_300"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="@+id/divider_shop_type"
            app:layout_constraintStart_toStartOf="@+id/divider_shop_type"
            app:layout_constraintEnd_toEndOf="@+id/divider_shop_type"
            app:layout_constraintRight_toRightOf="@+id/divider_shop_type"
            app:layout_constraintTop_toBottomOf="@+id/shop_success_transaction"/>

        <TextView style="@style/TextView.Micro.BlackDisabled"
            android:layout_width="0dp"
            android:text="@string/label_shop_courrier"
            android:id="@+id/label_shop_courrier"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="@+id/label_shop_type"
            app:layout_constraintStart_toStartOf="@+id/label_shop_type"
            app:layout_constraintRight_toRightOf="@+id/label_shop_type"
            app:layout_constraintEnd_toEndOf="@+id/label_shop_type"
            app:layout_constraintTop_toBottomOf="@+id/divider_shop_success_transaction" />

        <TextView style="@style/TextView.Micro"
            android:id="@+id/shop_courrier"
            android:layout_width="0dp"
            tools:text="JNE, TIKI"
            android:layout_marginBottom="@dimen/dp_8"
            app:layout_constraintLeft_toLeftOf="@+id/shop_type"
            app:layout_constraintStart_toStartOf="@+id/shop_type"
            app:layout_constraintTop_toTopOf="@+id/label_shop_courrier"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>