<resources>

    <style name="Tabs.Notification">
        <item name="footerIndicatorHeight">1dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="footerColor">@color/Unify_G500</item>
        <item name="android:textColor">@color/Unify_G500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationMenuItemTextAppearance">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Unify_N700_96</item>
    </style>

    <style name="NavigationTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/Unify_N0</item>
    </style>
</resources>
