<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_favorite_shop"
    android:layout_width="@dimen/nav_card_me_page_size"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_favshop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">
        <FrameLayout
            android:id="@+id/container_image_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_image_border"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8"
            android:padding="1dp">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/image_shop"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:contentDescription="@string/content_desc_image_favorite_shop"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/container_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            app:layout_constraintStart_toEndOf="@id/container_image_shop"
            app:layout_constraintTop_toTopOf="@id/container_image_shop"
            app:layout_constraintBottom_toTopOf="@id/text_shop_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/icon_shop_badge"
                android:layout_width="18dp"
                android:contentDescription="@string/content_desc_image_shop_badge"
                android:layout_height="18dp"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Otten Coffee Jakarta"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/Unify_NN950"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginStart="@dimen/unify_space_4"
                app:typographyType="display_3"/>

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_shop_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Jakarta"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyWeight="reguler"
            android:textColor="@color/Unify_NN600"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginEnd="@dimen/unify_space_8"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="@id/container_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_name"
            app:layout_constraintBottom_toBottomOf="@id/container_image_shop"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="small"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify2>