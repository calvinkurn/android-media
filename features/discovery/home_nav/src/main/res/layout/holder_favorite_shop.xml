<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="246dp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_favshop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">
        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_shop"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/unify_space_8"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8"/>

        <LinearLayout
            android:id="@+id/container_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            app:layout_constraintLeft_toRightOf="@id/image_shop"
            app:layout_constraintTop_toTopOf="@id/image_shop"
            app:layout_constraintBottom_toTopOf="@id/text_shop_location"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginRight="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_8"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/icon_shop_badge"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/text_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Otten Coffee Jakarta"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginLeft="@dimen/unify_space_4"
                app:typographyType="display_3"/>

        </LinearLayout>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_shop_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jakarta"
            android:maxLines="1"
            android:ellipsize="end"
            app:typographyWeight="reguler"
            android:textColor="@color/Unify_NN600"
            android:layout_marginTop="@dimen/unify_space_4"
            android:layout_marginRight="@dimen/unify_space_8"
            android:layout_marginEnd="@dimen/unify_space_8"
            app:layout_constraintLeft_toLeftOf="@id/container_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_name"
            app:layout_constraintBottom_toBottomOf="@id/image_shop"
            app:layout_constraintVertical_chainStyle="packed"
            app:typographyType="small"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify2>