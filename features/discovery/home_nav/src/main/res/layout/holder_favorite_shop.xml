<?xml version="1.0" encoding="utf-8"?>
<com.tokopedia.unifycomponents.CardUnify2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="246dp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/image_wishlist"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/unify_space_8"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8"/>

        <com.tokopedia.unifycomponents.ImageUnify
            android:id="@+id/icon_shop_badge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintLeft_toRightOf="@id/image_wishlist"
            app:layout_constraintTop_toTopOf="@id/image_wishlist"
            app:layout_constraintBottom_toBottomOf="@id/image_wishlist"
            android:layout_marginLeft="@dimen/unify_space_8"
            android:layout_marginStart="@dimen/unify_space_8"/>

        <com.tokopedia.unifyprinciples.Typography
            android:id="@+id/text_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Otten Coffee Jakarta"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/icon_shop_badge"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_wishlist"
            app:layout_constraintBottom_toBottomOf="@id/image_wishlist"
            android:layout_marginLeft="@dimen/unify_space_4"
            app:typographyType="display_3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.tokopedia.unifycomponents.CardUnify2>