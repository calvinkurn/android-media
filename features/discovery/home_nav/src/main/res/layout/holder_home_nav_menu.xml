<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <com.tokopedia.iconunify.IconUnify
        android:id="@+id/menu_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.tokopedia.unifycomponents.ImageUnify
        android:id="@+id/menu_image_unify"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.tokopedia.unifyprinciples.Typography
        android:id="@+id/menu_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Belanja"
        app:layout_constraintHorizontal_bias="0"
        app:typographyType="body_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_image"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tokopedia.unifycomponents.NotificationUnify
        android:id="@+id/menu_notification"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:notificationType="counter_type"
        tools:visibility="visible"/>
    <com.tokopedia.unifycomponents.NotificationUnify
        android:id="@+id/menu_notification_typography"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Unify_N700"
        android:layout_marginEnd="8dp"
        app:typographyType="small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:notificationType="counter_type"
        tools:visibility="visible"/>
</LinearLayout>