<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/dp_4"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_12"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_24"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible">

            <com.tokopedia.unifycomponents.UnifyButton
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:text="@string/btn_login"
                android:layout_marginRight="@dimen/dp_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_register"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:text="@string/btn_register"
                android:layout_marginLeft="@dimen/dp_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_login"
                app:layout_constraintTop_toTopOf="parent"
                app:unifyButtonType="main"
                app:unifyButtonVariant="ghost"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_24"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.UnifyButton
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="@+id/img_user_login_as"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_user_login_as"
                app:layout_constraintTop_toTopOf="@+id/img_user_login_as"
                tools:text="Masuk Sebagai" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_12"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible">

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/img_user_login"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:unify_image_type="circle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/usr_badge"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:scaleType="fitCenter"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"

                app:layout_constraintBottom_toTopOf="@id/usr_ovo_badge"
                app:layout_constraintLeft_toRightOf="@id/img_user_login"
                app:layout_constraintTop_toTopOf="@id/img_user_login"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.tokopedia.unifycomponents.ImageUnify
                android:id="@+id/usr_ovo_badge"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitCenter"
                tools:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/img_user_login"
                app:layout_constraintLeft_toRightOf="@id/img_user_login"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintVertical_chainStyle="packed" />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:textSize="@dimen/sp_16"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:layout_constraintLeft_toRightOf="@id/usr_badge"
                app:layout_constraintTop_toTopOf="@id/usr_badge"
                app:layout_constraintBottom_toBottomOf="@id/usr_badge"
                app:layout_constraintRight_toLeftOf="@id/btn_settings"
                app:typographyType="heading_4"
                tools:text="John Doe"/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/tv_ovo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                app:layout_constraintLeft_toRightOf="@id/usr_ovo_badge"
                app:layout_constraintTop_toTopOf="@id/usr_ovo_badge"
                app:layout_constraintBottom_toBottomOf="@id/usr_ovo_badge"
                app:typographyType="body_3"
                tools:text="John Doe"/>

            <com.tokopedia.iconunify.IconUnify
                android:id="@+id/btn_settings"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_8"
                app:icon_name="SETTING"
                app:layout_constraintTop_toTopOf="@id/img_user_login"
                app:layout_constraintBottom_toBottomOf="@id/img_user_login"
                app:layout_constraintEnd_toStartOf="@id/btn_try_again"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintVertical_chainStyle="packed"/>

            <ImageView
                android:id="@+id/btn_try_again"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:padding="5dp"
                android:background="@drawable/ic_oval_bg"
                app:layout_constraintTop_toTopOf="@id/img_user_login"
                app:layout_constraintBottom_toBottomOf="@id/img_user_login"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="invisible"
                android:visibility="invisible"
                />

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/usr_shop_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="invisible"
                app:typographyType="body_3"
                app:layout_constraintTop_toBottomOf="@id/img_user_login"
                app:layout_constraintLeft_toLeftOf="@id/usr_badge"
                tools:visibility="visible"
                tools:text="toko saya : toko kamu "/>

            <com.tokopedia.unifyprinciples.Typography
                android:id="@+id/usr_shop_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:background="@drawable/notification_big_bg"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="@id/usr_shop_info"
                app:layout_constraintLeft_toRightOf="@id/usr_shop_info"
                tools:visibility="visible"
                tools:text=" 5 "/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_login_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_12"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/img_user_login_shimmer"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loader_type="circle"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/usr_badge_shimmer"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="fitCenter"

            app:loader_type="circle"
            app:layout_constraintBottom_toTopOf="@id/usr_ovo_badge_shimmer"
            app:layout_constraintLeft_toRightOf="@id/img_user_login_shimmer"
            app:layout_constraintTop_toTopOf="@id/img_user_login_shimmer"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/usr_ovo_badge_shimmer"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="fitCenter"

            app:loader_type="circle"
            app:layout_constraintBottom_toBottomOf="@id/img_user_login_shimmer"
            app:layout_constraintLeft_toRightOf="@id/img_user_login_shimmer"
            app:layout_constraintTop_toBottomOf="@id/usr_badge_shimmer"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/tv_name_shimmer"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_6"
            android:textSize="@dimen/sp_16"
            app:loader_type="line"
            app:layout_constraintLeft_toRightOf="@id/usr_badge_shimmer"
            app:layout_constraintTop_toTopOf="@id/usr_badge_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/usr_badge_shimmer"/>

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/tv_ovo_shimmer"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_6"
            app:loader_type="line"
            app:layout_constraintLeft_toRightOf="@id/usr_ovo_badge_shimmer"
            app:layout_constraintTop_toTopOf="@id/usr_ovo_badge_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/usr_ovo_badge_shimmer" />

        <com.tokopedia.unifycomponents.LoaderUnify
            android:id="@+id/btn_settings"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            app:loader_type="circle"
            app:layout_constraintTop_toTopOf="@id/img_user_login_shimmer"
            app:layout_constraintBottom_toBottomOf="@id/img_user_login_shimmer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>